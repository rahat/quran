{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Vois-tu celui qui qualifie de mensonge l’avènement du Jour du Jugement"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "C’est celui qui repousse l’orphelin"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "et qui n’incite pas à nourrir le pauvre"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Malheur à ceux qui pratiquent la salât (la prière)"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(mais) qui sont oublieux de leur salât"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "ne l’accomplissent que par ostentation"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "et qui refusent toute aide à leur prochain"
        }
    ]
}