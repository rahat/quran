{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "ki onun oluşunu yalanlayacak hiçbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar parçaladığı zaman"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "dağılıp toz duman haline geldiği"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "sağdakiler, ne mutlu o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdırlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, (ecirde de) öndedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte bunlar, (Allah'a) en yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naîm cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onların) çoğu önceki ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Cevherlerle işlenmiş tahtlar üzerindedir"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "karşılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Çevrelerinde, (hizmet için) ölümsüz gençler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Maîn çeşmesinden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu şaraptan ne başları ağrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "(Onlara) beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "yaptıklarına karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen, yalnızca «selâm, selâm »dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, ne mutlu o sağdakilere (amel defteri sağdan verilenlere)"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Düzgün kiraz ağacı"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "meyveleri salkım salkım dizili muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "sayısız meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "ve kabartılmış döşekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gerçekten biz hurileri apayrı biçimde yeni yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, eşlerine bâkireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bütün bunlar sağdakiler içindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların birçoğu önceki ümmetlerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Birçoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler; ne yazık o soldakilere (amel defteri soldan verilenlere)"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "kapkara dumandan bir gölge altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "serin ve hoş olmayan"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar bundan önce varlık içinde sefahete dalmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı işlemekte direnir dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardı ki: Biz öldükten, toprak ve kemik yığını haline geldikten sonra, biz mi bir daha diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Hem öncekiler hem de sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "belli bir günün belli vaktinde mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz ey sapıklar, yalancılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı ondan dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne de kaynar sudan içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin suya saldırışı gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza gününde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık. Tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Söyleyin öyleyse, (rahimlere) döktüğünüz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz ve biz, önüne geçilebileceklerden değiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediğiniz bir âlemde tekrar var edelim diye (ölümü takdir ettik)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratılışı bildiniz. Düşünüp ibret almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Şimdi bana, ektiğinizi haber verin"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu kuru bir çöp yapardık da şaşar kalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "«Doğrusu borç altına girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha doğrusu, biz yoksul kaldık» (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ya içtiğiniz suya ne dersiniz"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Şükretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Söyleyin şimdi bana, tutuşturmakta olduğunuz ateşi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "onun ağacını siz mi yarattınız, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve çölden gelip geçenlerin istifadesi için yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse Yüce Rabbinin adıyla tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Hayır! Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Bilirseniz, gerçekten bu, büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Şüphesiz bu, korunmuş bir kitapta bulunan"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenenler dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "O, âlemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz, bu sözü mü küçümsüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Allah’ın verdiği rızka karşı şükrü, onu yalanlamakla mı yerine getiriyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele can boğaza dayandığı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakar durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "(O anda) biz ona sizden daha yakınız, ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu (canı) geri çevirsenize, şayet iddianızda doğru iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Fakat (ölen kişi Allah'a) yakın olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "ona rahatlık, güzel rızık ve Naîm cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o sağdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "«Ey sağdaki! Sana selam olsun!»"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Ama yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "İşte ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) cehenneme atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Şüphesiz ki bu, kesin gerçektir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "O halde Yüce Rabbinin adıyla tesbîh et"
        }
    ]
}