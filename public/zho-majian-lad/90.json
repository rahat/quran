{
    "chapter": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Wǒ yǐ zhège dìfāng méngshì"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "nǐ jiàng zài nàlǐ, bù shòu jī shù"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "wǒ yǐ yīgè fùqīn hé tāsuǒ shēng de zǐsūn méngshì,"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "wǒ què yǐ bǎ rén chuàngzào zài kǔnàn lǐ."
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Tā yǐwéi rènhé rén dōu bùnéng zhìcái tā ma?"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Tā shuō: Wǒ huāfèile xǔduō cáichǎn!"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Tā yǐwéi rènhé rén dōu méiyǒu kànjiàn tā ma?"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Nándào wǒ méiyǒu wéi tā chuàngzào liǎng zhī yǎnjīng,"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "yītiáo shétou, liǎng piàn zuǐchún,"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "bìng zhǐshì tā liǎng tiáo míngxiǎn de dàolù ma?"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Tā zěnmó bù chāoyuè shān jìng ne?"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Nǐ zěn néng zhīdào chāoyuè shān jìng shì shénmó shì?"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Shì shìfàng núlì,"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "huò zài jīhuang rì zhènjì"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "qīnqī de gū'ér,"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "huò kùn qióng de pínmín;"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "tóngshí, tā shì yīgè xìndào érqiě xíngshàn, bìng yǐ jiānrěn xiāng miǎn, yǐ cí mǐn xiāngzhù zhě."
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Zhè děng rén shì xìngfú de."
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Bùxìn wǒ de jīxiàng zhě, shì bómìng de,"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "tāmen jiāng bèi guān zài huǒ yù lǐ."
        }
    ]
}