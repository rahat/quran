{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Gunese ve kusluk vaktindeki aydınlıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Gunesi takip ettiginde Ay'a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu acıga cıkarttıgında gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orttugunde geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Gokyuzune ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yapıp doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve ona birtakım kabiliyetler verene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona iyilik ve kotulukleri ilham edene yemin ederim ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Nefsini kotuluklerden arındıran kurtulusa ermistir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kotuluklere gomen de ziyan etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlıgı yuzunden (Allah'ın elcisini) yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Onların en bedbahtı (deveyi kesmek icin) atıldıgında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın Resulu onlara: \"Allah'ın devesine ve onun su hakkına dokunmayın!\" dedi"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Ama onlar, onu yalanladılar ve deveyi kestiler. Bunun uzerine Rableri gunahları sebebiyle onlara buyuk bir felaket gonderdi de hepsini helak etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "(Allah, bu sekilde azap etmenin) akıbetinden korkacak degil ya"
        }
    ]
}