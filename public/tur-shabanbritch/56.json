{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Ki onun kopmasını yalanlayacak hiçbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer sarsıldıkça"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olduğu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz toprak halinde dağılıp savrulduğu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağdakiler, nedir o sağdakiler"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, nedir o soldakiler"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, (derece olarak da) öndedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte onlar, yakınlaştırılmış olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet Cennetlerindedir onlar"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Süslenmiş tahtlar üzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşı karşıya oturup, arkalarına yaslanmışlardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bundan ne başlarını bir ağrı tutar, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendiklerinden meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki sedef içindeki inciler"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "yaptıkları amellere karşılık (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş ve günaha sokacak bir söz işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen, yalnızca \"Selâm, selâm\"dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, nedir o sağdakiler"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz çehri ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmış gölgede"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan sularda"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Meyveler içinde"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksek döşekler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o kadınları yeni bir yaratılışla yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler şeklinde yarattık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ taraftakiler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Çoğu da sonrakilerden…"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler, nedir o soldakiler"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen ateşin rüzgarı ve kaynar su içindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman gölgesi içinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serinlik yok, kerem yok"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar, bundan önce (haramlar içinde) şımarmış kimselerdi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günah üzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz? diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha önceki atalarımızda mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Öncekiler de sonrakiler de…"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz ey sapıklar, yalanlayanlar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette yiyeceksiniz zakkum ağacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne içeceksiniz kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin içişi gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Hesap günü onların ziyafeti budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık! Gerekmez mi (tekrardan yaratılışı) tasdik etmeniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Söyleyin öyleyse, (rahimlere) döktüğünüz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz! Bizler aciz de değiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi benzerlerinizle değiştirmek ve sizi bilmediğiniz bir şekilde yeniden yaratmak hususunda…"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "İlk yaratılışınızı biliyorsunuz, düşünmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğiniz şeyleri gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onları bitiren siz misiniz yoksa biz mi bitiriyoruz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek, onu çör çöp yaparız da şaşırıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Muhakkak biz çok ziyandayız"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Doğrusu biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçtiğiniz suyu gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "İsteseydik onu tuzlu bir su yapardık; şükretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Tutuşturduğunuz ateşi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve gelip geçen yolcuların istifadesi için yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde yüce Rabbinin adını tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Şüphesiz bu, büyük bir yemindir, eğer bilirseniz"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Şüphesiz bu, değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli/korunmuş bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenenler dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Siz bu sözü mü hor görüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete şükür ediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele bir (ruh) boğaza gelmiş olmasın"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Siz, o zaman bakıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz, ona sizden daha yakınız, ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki (tekrardan dirilip) ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu (ruhu) geri çeviriniz. Doğru söyleyenlerden iseniz…"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer o (ölen kişi), yakın kılınanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, güzel rızık ve Naim Cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o, sağdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sağdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer o, yalanlayanlardan ve sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Kaynar suda bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılış"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Bu, kesin olan hakkın ta kendisidir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse yüce Rabbinin adını tesbih et"
        }
    ]
}