{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Yemin olsun, ardı ardına gonderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Siddetle esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydıkca yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ayırdıkca ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Zikri getirip, bırakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Gerek ozur icin olsun, gerek uyarı icin"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Suphe yok ki, size vaadedilen mutlaka gerceklesecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızların ısıgı sondugu zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar parcamparca olup savruldugunda"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Peygamberlere ummetleri hakkında sahitlik vakitleri bildirildigi zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bu, hangi gune ertelenmis"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Ayrım (hukum) gunune (ertelenmistir)"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hukum gununun ne oldugunu sen ne bileceksin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gun vay yalanlayanların haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Biz, oncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra arkadan gelenleri de onların arkasına takacagız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Biz, gunahkarlara iste boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gun vay yalanlayanların haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Ve onu saglam bir yere yerlestirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Buna gucumuz yeter. Ne guzel guc yetirenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz, yeryuzunu bir toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Diri olanları da, olu olanları da"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yuksek daglar yaratıp size tatlı su icirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Yalanlamıs oldugunuza (azaba) dogru yuruyun bakalım"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Uc kollu (atesin) golgesine dogru yuruyun"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ne golgelendirir, ne alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, her biri saraylar gibi olan kıvılcımlar sacar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Her biri sarı develer gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konusamayacakları bir gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Onların ozur dilemelerine dahi izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, ayırma (hukum) gunudur. Sizi ve evvelkileri bir araya toplarız"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eger bir tuzagınız varsa, haydi bana karsı tuzak kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gun, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Suphesiz ki takva sahipleri, golgelerde pınar baslarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının cekip-arzu ettigi meyveler (arasındadırlar)"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıgınız ameller sebebi ile afiyetle yiyin, icin"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, iyilik yapanları iste boyle odullendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin ve biraz yararlanın; muhakkak ki siz gunahkarlarsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "O gun, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara; “Ruku edin!” denildigi zaman ruku etmezlerdi"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "O gun yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Onlar bundan (Kur'an'dan) sonra artık hangi soze iman edecekler"
        }
    ]
}