{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Siddetle gelip catan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o yurekleri hoplatan buyuk felaket"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Yurekleri hoplatan buyuk felaketin ne oldugunu sen ne bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar, her biri bir tarafa ucusan pervaneler gibi olacaktır"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da atılmıs renkli yunler gibi olacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste o vakit, kimin tartıları agır gelmisse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Artık o, hosnut olacagı bir hayatın icinde olacaktır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Ama kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Iste onun varacagı yer Haviye’dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Sen Haviye’nin ne oldugunu ne bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir atestir"
        }
    ]
}