{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Kad nebo raspukne"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "I poslusa Gospodara svog - a obavezno je"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "I kad se Zemlja rastegne"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "I izbaci sta je u njoj i isprazni se"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "I poslusa Gospodara svog - a obavezna je"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "O covjece! Zaista si ti trudbenik Gospodaru svom trudom, pa ti si taj koji ces Ga sresti"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Pa, kome se da knjiga njegova u desnicu njegovu"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Pa bice obracunat obracunom lahkim"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "I vratice se porodici svojoj obradovan"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "A kome se da knjiga njegova iza leÄ‘a njegovih"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Pa prizivace propast"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "I przice se seirom"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Uistinu, on je u porodici svojoj radostan bio"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Uistinu, on je smatrao da se nece vratiti"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Svakako! Uistinu, Gospodar njegov je Taj koji ga gleda"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Pa ne! Kunem se rumenilom vecernjim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "I nocu i onim sta prikupi"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "I Mjesecom kad se ispuni"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Sigurno cete prelaziti iz sfere u sferu"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Pa sta im je?, ne vjeruju"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "I kad im se uci Kur'an na sedzdu ne padaju"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Naprotiv, oni koji ne vjeruju - poricu"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "A Allah je Najbolji znalac onog sta imaju na umu"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Pa obraduj ih kaznom bolnom"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Sem onih koji vjeruju i cine dobra djela: imace oni nagradu neprekidnu"
        }
    ]
}