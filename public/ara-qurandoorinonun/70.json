{
    "chapter": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَأَلَ سَآئِلُۢ بِعَذَابٖ وَاقِعٖ"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكٰ۪فِرِينَ لَيۡسَ لَهُۥ دَافِعٞ"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ اَ۬للَّهِ ذِي اِ۬لۡمَعَارِجِ"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ اُ۬لۡمَلَٰٓئِكَةُ وَاَلرُّوحُ إِلَيۡهِ فِي يَوۡمٖ كَانَ مِقۡدَارُهُۥ خَمۡسِينَ أَلۡفَ سَنَةٖ"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَاَصۡبِرۡ صَبۡرٗا جَمِيلًا"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "إِنَّهُمۡ يَرَوۡنَهُۥ بَعِيدٗا"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَنَر۪ىٰهُ قَرِيبٗا"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "يَوۡمَ تَكُونُ اُ۬لسَّمَآءُ كَاَلۡمُهۡلِ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُونُ اُ۬لۡجِبَالُ كَاَلۡعِهۡنِ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيمٌ حَمِيمٗا"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يُبَصَّرُونَهُمۡۚ يَوَدُّ اُ۬لۡمُجۡرِمُ لَوۡ يَفۡتَدِي مِنۡ عَذَابِ يَوۡمِئِذِۢ بِبَنِيهِ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَٰحِبَتِهِۦ وَأَخِيهِ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِيلَتِهِ اِ۬لَّتِي تُـٔۡوِيهِ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَن فِي اِ۬لۡأَرۡضِ جَمِيعٗا ثُمَّ يُنجِيهِ"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّآۖ إِنَّهَا لَظۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةٞ لِّلشَّوۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُواْ مَنۡ أَدۡبَرَ وَتَوَلّۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَأَوۡعۭيٰٓ"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "إِنَّ اَ۬لۡإِنسَٰنَ خُلِقَ هَلُوعًا"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "إِذَا مَسَّهُ اُ۬لشَّرُّ جَزُوعٗا"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "وَإِذَا مَسَّهُ اُ۬لۡخَيۡرُ مَنُوعًا"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "إِلَّا اَ۬لۡمُصَلِّينَ"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "اَ۬لَّذِينَ هُمۡ عَلَىٰ صَلَاتِهِمۡ دَآئِمُونَ"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "وَاَلَّذِينَ فِيٓ أَمۡوَٰلِهِمۡ حَقّٞ مَّعۡلُومٞ"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "لِّلسَّآئِلِ وَاَلۡمَحۡرُومِ"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "وَاَلَّذِينَ يُصَدِّقُونَ بِيَوۡمِ اِ۬لدِّينِ"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "وَاَلَّذِينَ هُم مِّنۡ عَذَابِ رَبِّهِم مُّشۡفِقُونَ"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "إِنَّ عَذَابَ رَبِّهِمۡ غَيۡرُ مَأۡمُونٖ"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "وَاَلَّذِينَ هُمۡ لِفُرُوجِهِمۡ حَٰفِظُونَ"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "إِلَّا عَلَىٰٓ أَزۡوَٰجِهِمۡ أَوۡ مَا مَلَكَتۡ أَيۡمَٰنُهُمۡ فَإِنَّهُمۡ غَيۡرُ مَلُومِينَ"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "فَمَنِ اِ۪بۡتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُوْلَٰٓئِكَ هُمُ اُ۬لۡعَادُونَ"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "وَاَلَّذِينَ هُمۡ لِأَمَٰنَٰتِهِمۡ وَعَهۡدِهِمۡ رَٰعُونَ"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "وَاَلَّذِينَ هُم بِشَهَٰدَتِهِمۡ قَآئِمُونَ"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "وَاَلَّذِينَ هُمۡ عَلَىٰ صَلَاتِهِمۡ يُحَافِظُونَ"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "أُوْلَٰٓئِكَ فِي جَنَّٰتٖ مُّكۡرَمُونَ"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "فَمَالِ اِ۬لَّذِينَ كَفَرُواْ قِبَلَكَ مُهۡطِعِينَ"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "عَنِ اِ۬لۡيَمِينِ وَعَنِ اِ۬لشِّمَالِ عِزِينَ"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "أَيَطۡمَعُ كُلُّ اُ۪مۡرِيٕٖ مِّنۡهُمۡ أَن يُدۡخَلَ جَنَّةَ نَعِيمٖ"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "كَلَّآۖ إِنَّا خَلَقۡنَٰهُم مِّمَّا يَعۡلَمُونَ"
        },
        {
            "chapter": 70,
            "verse": 40,
            "text": "۞فَلَآ أُقۡسِمُ بِرَبِّ اِ۬لۡمَشَٰرِقِ وَاَلۡمَغَٰرِبِ إِنَّا لَقَٰدِرُونَ"
        },
        {
            "chapter": 70,
            "verse": 41,
            "text": "عَلَىٰٓ أَن نُّبَدِّلَ خَيۡرٗا مِّنۡهُمۡ وَمَا نَحۡنُ بِمَسۡبُوقِينَ"
        },
        {
            "chapter": 70,
            "verse": 42,
            "text": "فَذَرۡهُمۡ يَخُوضُواْ وَيَلۡعَبُواْ حَتَّىٰ يُلَٰقُواْ يَوۡمَهُمُ اُ۬لَّذِي يُوعَدُونَ"
        },
        {
            "chapter": 70,
            "verse": 43,
            "text": "يَوۡمَ يَخۡرُجُونَ مِنَ اَ۬لۡأَجۡدَاثِ سِرَاعٗا كَأَنَّهُمۡ إِلَىٰ نَصۡبٖ يُوفِضُونَ"
        },
        {
            "chapter": 70,
            "verse": 44,
            "text": "خَٰشِعَةً أَبۡصَٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةٞۚ ذَٰلِكَ اَ۬لۡيَوۡمُ اُ۬لَّذِي كَانُواْ يُوعَدُونَ"
        }
    ]
}