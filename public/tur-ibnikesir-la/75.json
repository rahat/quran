{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kıyamet gunune yemin ederim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Nedamet ceken nefse yemin ederim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Insan zanneder mi ki Biz; onun kemiklerini bir araya toplayamayız"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, Biz parmak uclarını bile duzeltmeye kadiriz"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Fakat insan, onundekini yalanlamak ister de"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Kıyamet gunu de ne zamanmıs? diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Goz kamastıgında"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ay tutuldugunda"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Gunes ve ay bir araya getirildiginde"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gun, insan; kacacak yer nerede? der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, hic bir sıgınak yoktur"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun, herkesin duracagı yer, ancak Rabbının huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun, onde ve sonda ne yaptıysa insana bildirilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Daha dogrusu insan, kendi kendinin sahididir"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Ma´zeretlerini sayıp dokse de"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu acele etmen icin dilini onunla beraber oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Suphesiz onu toplamak ve okutmak Bize aittir"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Oyleyse Biz, onu okudugumuz vakit; sen, onun okunusunu dinle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra suphesiz onu acıklamak da Bize aittir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, bilakis siz, cabuk geceni seversiniz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ve ahireti bırakırsınız"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Bir takım yuzler o gun parlayacak"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabblarına bakacaklardır"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Bir takım yuzler de asıktır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Belkemiginin kırılacagını anlar"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Dikkat edin, koprucuk kemigine bir dayandıgı zaman"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Care bulacak kim? denir"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Ve ayrılık vaktinin geldigini anlar"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacak da bacaga dolasır"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gun; sevk, yalnız Rabbınadır"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemisti, namaz da kılmamıstı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamıs, yuz cevirmisti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına kendinden yana olanlara gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan kendisinin basıbos bırakılacagını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı olmus; sonra, onu insan bicimine koyup yaratmıs ve duzeltmistir"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek, disi iki cins yaratmıstır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Simdi O; oluleri diriltmeye kadir degil midir"
        }
    ]
}