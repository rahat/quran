{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yeryüzü, ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan ne oluyor buna dediği vakit"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün, yer kendi haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona (öyle) vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar amellerinin kendilerine gösterilmesi için bölük bölük kabirlerinden çıkacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre ağırlığınca bir hayır işlerse, onun mükâfatını görecektir"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre ağırlığınca bir kötülük işlerse, onun cezasını görecektir"
        }
    ]
}