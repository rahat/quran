{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "إِذَا وَقَعَتِ ٱلۡوَاقِعَةُ"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "لَيۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "خَافِضَةࣱ رَّافِعَةٌ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "إِذَا رُجَّتِ ٱلۡأَرۡضُ رَجࣰّ ا"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وَبُسَّتِ ٱلۡجِبَالُ بَسࣰّ ا"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "فَكَانَتۡ هَبَآءࣰ مُّنۢبَثࣰّ ا"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وَكُنتُمۡ أَزۡوَٰجࣰ ا ثَلَٰثَةࣰ‏"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "فَأَصۡحَٰبُ ٱلۡمَيۡمَنَةِ مَآ أَصۡحَٰبُ ٱلۡمَيۡمَنَةِ"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "وَأَصۡحَٰبُ ٱلۡمَشۡـَٔمَةِ مَآ أَصۡحَٰبُ ٱلۡمَشۡـَٔمَةِ"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "وَٱلسَّٰبِقُونَ ٱلسَّٰبِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "أُوْلَٰٓئِكَ ٱلۡمُقَرَّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "فِي جَنَّٰتِ ٱلنَّعِيمِ"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "وَقَلِيلࣱ مِّنَ ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "عَلَىٰ سُرُرࣲ مَّوۡضُونَةࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "مُّتَّكِـِٔينَ عَلَيۡهَا مُتَقَٰبِلِينَ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "يَطُوفُ عَلَيۡهِمۡ وِلۡدَٰنࣱ مُّخَلَّدُونَ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِأَكۡوَابࣲ وَأَبَارِيقَ وَكَأۡسࣲ مِّن مَّعِينࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا يُصَدَّعُونَ عَنۡهَا وَلَا يُنزِفُونَ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَٰكِهَةࣲ مِّمَّا يَتَخَيَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَيۡرࣲ مِّمَّا يَشۡتَهُونَ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُورٌ عِينࣱ‏"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَأَمۡثَٰلِ ٱللُّولُوِٕ ٱلۡمَكۡنُونِ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَآءَۢ بِمَا كَانُواْ يَعۡمَلُونَ"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا يَسۡمَعُونَ فِيهَا لَغۡوࣰ ا وَلَا تَأۡثِيمًا"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "إِلَّا قِيلࣰ ا سَلَٰمࣰ ا سَلَٰمࣰ ا"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَأَصۡحَٰبُ ٱلۡيَمِينِ مَآ أَصۡحَٰبُ ٱلۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِي سِدۡرࣲ مَّخۡضُودࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَطَلۡحࣲ مَّنضُودࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَظِلࣲّ مَّمۡدُودࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَمَآءࣲ مَّسۡكُوبࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَفَٰكِهَةࣲ كَثِيرَةࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوعَةࣲ وَلَا مَمۡنُوعَةࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَفُرُشࣲ مَّرۡفُوعَةٍ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "إِنَّآ أَنشَأۡنَٰهُنَّ إِنشَآءࣰ‏"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنَٰهُنَّ أَبۡكَارًا"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرۡبًا أَتۡرَابࣰ ا"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّأَصۡحَٰبِ ٱلۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "وَثُلَّةࣱ مِّنَ ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "وَأَصۡحَٰبُ ٱلشِّمَالِ مَآ أَصۡحَٰبُ ٱلشِّمَالِ"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "فِي سَمُومࣲ وَحَمِيمࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "وَظِلࣲّ مِّن يَحۡمُومࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "لَّا بَارِدࣲ وَلَا كَرِيمٍ"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "إِنَّهُمۡ كَانُواْ قَبۡلَ ذَٰلِكَ مُتۡرَفِينَ"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "وَكَانُواْ يُصِرُّونَ عَلَى ٱلۡحِنثِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "وَكَانُواْ يَقُولُونَ أَئِذَا مُتۡنَا وَكُنَّا تُرَابࣰ ا وَعِظَٰمًا أَءِنَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "أَوَءَابَآؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "قُلۡ إِنَّ ٱلۡأَوَّلِينَ وَٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "لَمَجۡمُوعُونَ إِلَىٰ مِيقَٰتِ يَوۡمࣲ مَّعۡلُومࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "ثُمَّ إِنَّكُمۡ أَيُّهَا ٱلضَّآلُّونَ ٱلۡمُكَذِّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "لَأٓكِلُونَ مِن شَجَرࣲ مِّن زَقُّومࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "فَمَالِـُٔونَ مِنۡهَا ٱلۡبُطُونَ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "فَشَٰرِبُونَ عَلَيۡهِ مِنَ ٱلۡحَمِيمِ"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "فَشَٰرِبُونَ شُرۡبَ ٱلۡهِيمِ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "هَٰذَا نُزُلُهُمۡ يَوۡمَ ٱلدِّينِ"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "نَحۡنُ خَلَقۡنَٰكُمۡ فَلَوۡلَا تُصَدِّقُونَ"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "أَفَرَءَيۡتُم مَّا تُمۡنُونَ"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "ءَأَنتُمۡ تَخۡلُقُونَهُۥٓ أَمۡ نَحۡنُ ٱلۡخَٰلِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "نَحۡنُ قَدَّرۡنَا بَيۡنَكُمُ ٱلۡمَوۡتَ وَمَا نَحۡنُ بِمَسۡبُوقِينَ"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "عَلَىٰٓ أَن نُّبَدِّلَ أَمۡثَٰلَكُمۡ وَنُنشِئَكُمۡ فِي مَا لَا تَعۡلَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "وَلَقَدۡ عَلِمۡتُمُ ٱلنَّشۡأَةَ ٱلۡأُولَىٰ فَلَوۡلَا تَذَّكَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "أَفَرَءَيۡتُم مَّا تَحۡرُثُونَ"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "ءَأَنتُمۡ تَزۡرَعُونَهُۥٓ أَمۡ نَحۡنُ ٱلزَّٰرِعُونَ"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "لَوۡ نَشَآءُ لَجَعَلۡنَٰهُ حُطَٰمࣰ ا فَظَلۡتُمۡ تَفَكَّهُونَ"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "أَءِنَّا لَمُغۡرَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بَلۡ نَحۡنُ مَحۡرُومُونَ"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "أَفَرَءَيۡتُمُ ٱلۡمَآءَ ٱلَّذِي تَشۡرَبُونَ"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "ءَأَنتُمۡ أَنزَلۡتُمُوهُ مِنَ ٱلۡمُزۡنِ أَمۡ نَحۡنُ ٱلۡمُنزِلُونَ"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "لَوۡ نَشَآءُ جَعَلۡنَٰهُ أُجَاجࣰ ا فَلَوۡلَا تَشۡكُرُونَ"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "أَفَرَءَيۡتُمُ ٱلنَّارَ ٱلَّتِي تُورُونَ"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "ءَأَنتُمۡ أَنشَأۡتُمۡ شَجَرَتَهَآ أَمۡ نَحۡنُ ٱلۡمُنشِـُٔونَ"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "نَحۡنُ جَعَلۡنَٰهَا تَذۡكِرَةࣰ وَمَتَٰعࣰ ا لِّلۡمُقۡوِينَ"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "فَسَبِّحۡ بِٱسۡمِ رَبِّكَ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "۞فَلَآ أُقۡسِمُ بِمَوَٰقِعِ ٱلنُّجُومِ"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "وَإِنَّهُۥ لَقَسَمࣱ لَّوۡ تَعۡلَمُونَ عَظِيمٌ"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "إِنَّهُۥ لَقُرۡءَانࣱ كَرِيمࣱ‏"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "فِي كِتَٰبࣲ مَّكۡنُونࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "لَّا يَمَسُّهُۥٓ إِلَّا ٱلۡمُطَهَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "تَنزِيلࣱ مِّن رَّبِّ ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "أَفَبِهَٰذَا ٱلۡحَدِيثِ أَنتُم مُّدۡهِنُونَ"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "وَتَجۡعَلُونَ رِزۡقَكُمۡ أَنَّكُمۡ تُكَذِّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "فَلَوۡلَآ إِذَا بَلَغَتِ ٱلۡحُلۡقُومَ"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "وَأَنتُمۡ حِينَئِذࣲ تَنظُرُونَ"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "وَنَحۡنُ أَقۡرَبُ إِلَيۡهِ مِنكُمۡ وَلَٰكِن لَّا تُبۡصِرُونَ"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "فَلَوۡلَآ إِن كُنتُمۡ غَيۡرَ مَدِينِينَ"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "تَرۡجِعُونَهَآ إِن كُنتُمۡ صَٰدِقِينَ"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "فَأَمَّآ إِن كَانَ مِنَ ٱلۡمُقَرَّبِينَ"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "فَرَوۡحࣱ وَرَيۡحَانࣱ وَجَنَّتُ نَعِيمࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "وَأَمَّآ إِن كَانَ مِنۡ أَصۡحَٰبِ ٱلۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "فَسَلَٰمࣱ لَّكَ مِنۡ أَصۡحَٰبِ ٱلۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "وَأَمَّآ إِن كَانَ مِنَ ٱلۡمُكَذِّبِينَ ٱلضَّآلِّينَ"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "فَنُزُلࣱ مِّنۡ حَمِيمࣲ‏"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "وَتَصۡلِيَةُ جَحِيمٍ"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "إِنَّ هَٰذَا لَهُوَ حَقُّ ٱلۡيَقِينِ"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "فَسَبِّحۡ بِٱسۡمِ رَبِّكَ ٱلۡعَظِيمِ"
        }
    ]
}