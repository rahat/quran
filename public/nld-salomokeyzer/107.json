{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Wat dunkt u van hem, die het toekomstige oordeel als eene valschheid loochent"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Het is degeen, die den wees verstoot"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "En anderen niet aanspoort den arme te voeden"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Wee over hen, die bidden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Maar die achteloos in hun gebed zijn"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Die de huichelaars spelen"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En (den behoeftige) de noodige aalmoes (gereedschappen) onthouden"
        }
    ]
}