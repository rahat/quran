{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "کیا پہنچی ہے آپ کو چھا جانے والی آفت کی خبر"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "کتنے ہی چہرے اس دن ذلیل وخوار ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "مشقت میں مبتلا، تھکے ماندے"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "داخل ہوں گے دہکتی ہوئی آگ میں"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "انہیں پلایا جائے گا کھولتے ہوئے چشمہ سے"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "انہیں کوئی کھانا نہ ملے گا بجز خاردار جھاڑ کے"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "جو نہ فربہ کرے گا اور نہ بھوک دور کرے گا"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "کتنے ہی چہرے اس دن بارونق ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "اپنی کاوشوں پر خوش ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "عالی شان جنت میں"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "نہ سنیں گے وہاں کوئی لغو بات"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "اس میں چشمہ جاری ہوگا"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "اس میں اونچے اونچے تخت (بچھے) ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "اور ساغر (قرینے سے ) رکھے ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "اور گاؤ تکیے قطار در قطار لگے ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "اور قیمتی قالین بچھے ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "کیا یہ لوگ (غور سے) اونٹ کو نہیں دیکھتے کہ اسے کیسے (عجیب طرح) پیدا کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "اور آسمان کی طرف نہیں دیکھتے کہ اسے کیسے بلند کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "اور پہاڑوں کی طرف کہ انہیں کیسے نصب کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "اور زمین کی طرف کہ اسے کیسے بچھایا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس آپ انہیں سمجھاتے رہا کریں آپ کا کام تو سمجھانا ہی ہے"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "آپ ان کو جبر سے منوانے والے تو نہیں ہیں"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر جس نے روگردانی کی اور کفر کیا"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "تو اللہ اس کو سخت عذاب دے گا"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "بے شک انہیں (آخر) ہمارے پاس ہی لوٹ کر آنا ہے"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "پھر یقیناً ہمارے ہی ذمہ ان کا حساب لینا ہے"
        }
    ]
}