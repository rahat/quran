{
    "chapter": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Pe cei ce smulg cu tărie"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Pe cei ce trag cu gingăşie"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Pe cei ce înalţă cu uşurinţă"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Pe cei ce o iau înainte"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Pe cei ce mânuiesc totul"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "În Ziua când cutremurul va cutremura"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "şi altul asemenea îi va urma"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "în Ziua aceea, inimile se vor îngrozi"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "şi privirile se vor smeri"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Oamenii vor spune: “Vom fi iarăşi ce-am fost, noi, cei din groapă"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "când putrede oase vom fi fiind?”"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Vor spune: “Aceasta este o păgubitoare întoarcere!”"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Un singur răcnet"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "şi iată-i pe faţa pământului"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "A venit la voi spusa lui Moise"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Domnul său l-a chemat în valea sfântă Tova"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "“Du-te la Faraon, căci este un ticălos"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "şi spune-i: ‘Eşti gata să te mântui"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Eu te voi călăuzi la Domnul tău, teme-te!’”"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Apoi i-a arătat semnul cel mare"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Faraon a hulit şi nu a dat ascultare"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "apoi zorit a întors spatele"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "El şi-a adunat poporul şi i-a strigat"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "“Eu sunt Domnul vostru, Preaînaltul!”"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Dumnezeu l-a făcut pildă de pedeapsă în Viaţa de Apoi şi în Viaţa de Acum"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Întru aceasta este o amintire pentru cel care se teme de Dumnezeu"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sunteţi voi oare mai greu de creat decât cerul pe care l-a zidit"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Dumnezeu a înălţat bolta şi a rânduit-o desăvârşit"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "El i-a dat nopţii întunericul, El i-a izvodit zilei lumina"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Apoi a întins pământul"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "şi din el a dat la iveală apa şi păşunile"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "A pironit munţii"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "zestre vouă şi turmelor voastre"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Când va veni Potopul cel Mare"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "în Ziua aceea omul îşi va aminti pentru ce s-a trudit"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Iadul va fi scos pentru cel care trebuie să-l vadă"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Celui ticăloşit"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "şi legat de Viaţa de Acum"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Iadul îi va fi liman"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Celui care se teme de înălţimea Domnului său şi opreşte pofta din sufletul său"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Raiul îi va fi liman"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Ei te vor întreba despre Ceas: “Când se va opri?”"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Ce le-ai putea tu aminti"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Întru Domnul tău este sfârşitul lui"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Tu nu faci decât să-i predici celui care se teme"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "În Ziua când îl vor vedea, li se va părea că au zăcut numai o seară ori numai o dimineaţă"
        }
    ]
}