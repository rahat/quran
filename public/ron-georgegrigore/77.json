{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Pe trimisele neîncetat"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Pe vântoasele aprige la suflat"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Pe solii iute răspânditori"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Pe despărţitorii osânditori"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Pe ai amintirii aducători"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "— întru dezvinuire ori întru predicare —"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Cu ce sunteţi ameninţaţi va veni neapărat"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "când stelele vor fi şterse"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "când cerul va fi despicat"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "când munţii vor fi în ţăndări aruncaţi"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "când trimişilor un răgaz le va fi dat"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Pentru ce zi au fost sorocite, oare"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Pentru Ziua Cumpenei"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Cum vei şti tu oare ce este Ziua Cumpenei"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Nu i-am nimicit pe oamenii dintâi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Nu îi facem pe cei de apoi să le urmeze"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Aşa vom face cu toţi nelegiuiţii"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Nu v-am creat Noi din apă lepădată"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "pe care am pus-o într-un vas trainic"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "până la un soroc ştiut"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Noi am sortit aşa! Ferice de cei sortitori"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "N-am făcut Noi pământul loc de adunare"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "pentru vii şi pentru morţi"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Nu am înălţat Noi munţii semeţi? Şi v-am dat să beţi apă dulce"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Duceţi-vă la ceea ce-aţi hulit"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Duceţi-vă către umbra în trei ramuri împărţită"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "care nici nu umbreşte şi nici de flacără nu scuteşte"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Ea împrăştie scântei cât palatul"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "asemenea unor galbene cămile"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "În Ziua aceea, ei nu vor putea vorbi"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "şi nu li se va îngădui să se dezvinovăţească"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Aceasta va fi Ziua Cumpenei când vă vom strânge pe voi laolaltă cu cei dintâi"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Dacă aveţi vreun vicleşug, vicleniţi asupra Mea"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Cei temători vor sta la umbră, lângă izvoare"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "şi vor avea fructele pe care şi le doresc"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "“Mâncaţi şi beţi în tihnă ca răsplată a faptelor voastre!”"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Aşa îi răsplătim Noi pe cei ce-au făptuit binele"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "“Mâncaţi şi bucuraţi-vă puţin, voi, cei care sunteţi nelegiuiţi!”"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Când li se spune: “Îngenunchiaţi!” Ei nu îngenunche"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "În Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "După aceasta, în ce spusă vor mai crede"
        }
    ]
}