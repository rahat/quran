{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "tāmen hùxiāng xúnwèn, xúnwèn shénme"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "xúnwèn nà zhòngdà de xiāoxī"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "jiùshì tāmen suǒ zhēnglùn de xiāoxī"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Jué bùrán! Tāmen jiānglái jiù zhīdàole"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Jué bùrán, tāmen jiānglái jiù zhīdàole"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Nándào wǒ méiyǒu shǐ dàdì rú yáolán"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "shǐ shānluán rú mù zhuāng ma"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "wǒ céng bǎ nǐmen zàochéng pèi'ǒu"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "wǒ céng shǐ nǐmen cóng shuìmián zhōng dédào xiūxí"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "wǒ céng yǐ hēiyè wèi wéimù"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "wǒ céng yǐ báizhòu gōng móushēng"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "wǒ céng zài nǐmen shàngmiàn jiànzàole qī céng jiāngù de tiān"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "wǒ céng chuàngzào yī zhǎn míngdēng"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "wǒ cóng hánshuǐ de yún lǐ, jiàngxià pāngtuó dàyǔ"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "yǐbiàn wǒ jiè tā ér shēngchū bǎi gǔ hé cǎomù"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "yǐjí màomì de yuánpǔ"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Pànjué zhī rì, què shì zhǐdìng de rì qī"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "zài nà rì, hàojiǎo jiāng bèi chuī xiǎng, nǐmen jiù chéng qún ér lái"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "tiān jiāng bèi kāipì, yǒu xǔduō ménhù"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "shānluán jiāng bèi yídòng, ér biàn chéng huànyǐng"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "huǒ yù què shì cìhòuzhe"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "zuò bèinì zhě de guīsù"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "tāmen jiàng zài qízhōng dòuliú chángjiǔ de shíqí"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Tāmen zài qízhōng bùnéng shuìmián, bùdé yǐnliào"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "zhǐ yǐn fèishuǐ hé nóng zhī"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Nà shì yīgè hěn xiāngdāng de bàochóu"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Tāmen díquè bùpà qīngsuàn"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "tāmen céng fǒurèn wǒ de jīxiàng"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "wǒ céng jiāng wànshì jìlù zài yī běn tiān jīng lǐ"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "(Jiāng duì tāmen shuō:)“Nǐmen chángshì ba! Wǒ zhǐ zēngjiā nǐmen suǒ shòu de xíngfá.”"
        }
    ]
}