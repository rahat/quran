{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Nar begivenheten inntreffer"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "kan det ikke benektes at den inntreffer"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Den fornedrer og opphøyer"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Nar jorden rystes i en veldig skaking"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "nar fjellene smuldres til smuler"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "og blir som oppvirvlet støv"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "da blir dere av tre slag"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "De til høyre, hva med dem til høyre"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "De til venstre, hva med dem til venstre"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Og de som ligger først i løpet? De som ligger først i løpet"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "– disse er det som kommer i Herrens nærhet"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "i lykksalighetens haver"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "En stor flokk fra tidligere tider"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "men fa fra de senere"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Pa pyntede benker hviler de"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "overfor hverandre"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "mens evig unge gutter gar rundt blant dem"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "med skaler og krus og beger med den klareste drikk"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "som man ikke far vondt i hodet eller mister vettet av"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "med slike frukter som de velger seg ut"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "og kjøtt og fugl som de ønsker seg"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Og storøyde kvinner er der"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "lik vel forvarte perler"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Som belønning for deres innsats"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Der skal de ikke høre tomt snakk, og ingen bebreidelser"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "bare ordene: «Fred, fred!»"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Og de til høyre, hva med dem til høyre"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Blant tornefrie lotustrær"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "og tette akasier"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "utstrakt skygge"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "og sprudlende vann"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "frukt i overflod"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "alltid for handen og fri til a ta av"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "pa opphøyde leier"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Fullkomne har Vi skapt dem, paradisets kvinner"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "som plettfrie jomfruer"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "ømme og kjærlige, jevngamle"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "med dem til høyre"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "– en stor flokk fra tidligere tider"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "og en stor flokk fra de senere"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Og de til venstre, hva med dem til venstre"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "I het, kvelende vind og skaldende vann"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "i skygge av kullsvart røyk"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "som ikke svaler, og ikke er til behag"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Tidligere levde de et liv i vellevnet"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "og turet frem i stor synd"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "og pleide a si: «Nar vi er døde og blitt til støv og tørre ben, skal vi da oppsta"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Og henfarne fedre ogsa?»"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "Si: «Bade de første og de siste"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "alle vil bli samlet, til fastsatt tid en bestemt dag.»"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Da vil dere som farer vill og holder sannhet for løgn"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "fa spise av Zaqqum-treet"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Fylle magen av det"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "og drikke kokende vann ved siden av"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Og dere vil drikke som uttørstede kameler"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Dette er deres velkomsthilsen pa dommens dag"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Det er Vi som har skapt dere! Hvorfor anser dere ikke dette for sant"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Hva med sæddrapene som dere avgir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Har dere skapt dem? Eller er Vi skaperen"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Vi har fastsatt døden for dere, ingen kan foregripe Oss"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "for a skifte dere ut med deres like og la dere oppsta i en skikkelse dere ikke kjenner"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Dere er kjent med den første oppstaen (fødsel). Hvorfor tenker dere ikke etter"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Har dere tenkt over jorden dere dyrker"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Er det dere som star bak utsæden, eller er det Vi som sar"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Om Vi ville, kunne Vi gjøre den til en unyttig vekst, og dere ville utbryte"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "«Vi er ruinert!»"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "«Vi er plyndret!»"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Har dere tenkt over vannet som dere drikker"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Er det dere som sender det ned fra skyene? Eller er det Vi som sender det"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Om Vi ville, kunne Vi gjøre det udrikkelig! Hvorfor er dere da ikke takknemlige"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Har dere tenkt over ilden, som dere tenner"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Har dere frembrakt dens brensel? Eller Vi"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Det er Vi som har gjort dette, som en paminnelse, og til nytte for dem som er i ørkenen"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Sa pris din Herre den Veldiges navn"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Nei, jeg sverger ved stjernenes nedgang"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "og dette er en stor ed, om dere bare hadde visst"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Dette er en kostelig Koran"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "som finnes i en vel forvart Bok"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Bare de rene far røre den"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "En apenbaring fra all verdens Herre"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Skulle dere da forsma denne forkynnelse"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Og gjøre det til en livssak a erklære den for løgn"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Nar den døende har sjelen oppe i halsen"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "mens dere star og ser pa"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "men Vi er ham nærmere enn dere, uten at dere ser det"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "sa, hvis dere ikke var Oss underlagt"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "hvorfor bringer dere da ikke hans sjel tilbake, om dere snakker sant"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Hvis han er av dem som far komme i Herrens nærhet"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "en aromatisk luftning, hvile, og lykksalighetens have"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Er han av dem til høyre"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "– «Fred være med deg, som er av høyre hands flokk!»"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Men er han av dem som holdt sannhet for løgn, og for vill"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "– en velkomsthilsen av kokende vann"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "og helvetes brann"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Dette er den visse sannhet"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Sa pris din Herre den Veldiges navn"
        }
    ]
}