{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "jab aakaash phat jaayega"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "tatha jab taare jhad jaayenge"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "aur jab saagar ubal padenge"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "aur jab samaadhiyaan (qabaren) khol dee jaayengee"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "tab pratyek praanee ko gyaan ho jaayega, jo usane kiya hai aur nahin kiya hai"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "he insaan! tujhe kis vastu ne tere udaar paalanahaar se bahaka diya"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "jisane teree rachana kee, phir tujhe santulit banaaya"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "jis roop mein chaaha bana diya"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "vaastav mein tum pratiphal (pralay) ke din ko nahin maanate"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "jabaki tumapar nireekshak (paasabaan) hain"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "jo maananeey lekhak hain"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "ve jo kuchh tum karate ho, jaanate hain"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "nihsandeh, sadaachaaree sukhon mein honge"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "aur duraachaaree narak mein"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "pratikaar (badale) ke din usamen jhonk diye jaayenge"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "aur ve usase bach rahane vaale nahin"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "aur tum kya jaano ki badale ka din kya hai"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "phir tum kya jaano ki badale ka din kya hai"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "jis din kisee ka kisee ke lie koee adhikaar nahin hoga aur us din sab adhikaar allaah ka hoga"
        }
    ]
}