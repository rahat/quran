{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "ētineppaṟṟiyāṇ avaran'yēān'yaṁ cēādiccukeāṇṭirikkunnat"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "atibhayaṅkaramāya vārttayeppaṟṟi tanne"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "atilavar bhinnābhiprāyakkārāṇ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "vēṇṭa; vaikāte avaraṟiyukatanne ceyyuṁ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "vīṇṭuṁ vēṇṭa; uṟappāyuṁ avaraṟiyuṁ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "bhūmiye nāṁ mettayākkiyillē"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "malakaḷe āṇikaḷuṁ"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "niṅṅaḷe nāṁ iṇakaḷāyi sr̥ṣṭiccu"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "niṅṅaḷuṭe uṟakkatte nāṁ viśramamākki"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "rāvine vastramākki"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "pakaline jīvitavēḷayākki"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "niṅṅaḷkku mēle bhadramāya ēḻākāśaṅṅaḷe nāṁ nirmiccu"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "kattijjvalikkunna oru viḷakkuṁ nāṁ sthāpiccu"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "kārmukililninn kuttiyeāḻukuṁ veḷḷamiṟakki"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "atuvaḻi dhān'yavuṁ ceṭikaḷuṁ ulpādippikkān"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "iṭatūrnna tēāṭṭaṅṅaḷuṁ"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "niścayamāyuṁ vidhidinaṁ samayanirṇitamāṇ"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "kāhaḷaṁ ūtunna dinamāṇat. appēāḷ niṅṅaḷ kūṭṭaṅkūṭṭamāyi vannettuṁ"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "ākāśaṁ tuṟakkappeṭuṁ. at anēkaṁ kavāṭaṅṅaḷāyittīruṁ"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "parvataṅṅaḷ iḷaki nīṅṅuṁ. ava marīcikayākuṁ"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "niścayamāyuṁ narakattī patisthalamāṇ"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "atikramikaḷuṭe saṅkētaṁ"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "avaratil yugaṅṅaḷēāḷaṁ vasikkuṁ"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "kuḷirēā kuṭinīrēā avaraviṭe anubhavikkukayilla"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "tiḷakkunna veḷḷavuṁ calavumallāte"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "arhikkunna pratiphalaṁ"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "tīrccayāyuṁ avar vicāraṇa pratīkṣikkunnavarāyirunnilla"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "nam'muṭe tākkītukaḷe avar appāṭe kaḷḷamākki taḷḷi"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "ellā kāryavuṁ nāṁ kr̥tyamāyi rēkhappeṭutti vecciṭṭuṇṭ"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "atināl niṅṅaḷ anubhaviccukeāḷḷuka. niṅṅaḷkku śikṣayallāteānnuṁ vardhippiccu tarānilla"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "bhaktanmārkk vijayaṁ uṟapp"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "avarkk svargattēāppukaḷuṁ muntirikkulakaḷumuṇṭ"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "tuṭutta māṟiṭamuḷḷa tulyavayaskarāya taruṇikaḷuṁ"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "niṟañña kēāppakaḷuṁ"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "avaraviṭe peāymeāḻikaḷēā viṭuvākkukaḷēā kēḷkkukayilla"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "ninṟe nāthanil ninnuḷḷa pratiphalamāyāṇat. avararhikkunna sam'mānaṁ"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "avan, ākāśabhūmikaḷuṭeyuṁ avaykkiṭayiluḷḷavayuṭeyuṁ nāthanāṇ. dayāparan. avanumāyi nēril sambhāṣaṇaṁ naṭattānārkkumāvilla"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "jibrīluṁ maṟṟu malakkukaḷuṁ aṇinirakkuṁ dinamāṇ atuṇṭāvuka. annārkkuṁ sansārikkānāvilla; karuṇānidhiyāya nāthan anuvādaṁ nalkiyavannuṁ satyaṁ paṟaññavannumeāḻike"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "atatre satyadinaṁ. atināl iṣṭamuḷḷavan tanṟe nāthaṅkalēkk maṭaṅṅānuḷḷa mārgamavalambikkaṭṭe"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "āsannamāya śikṣaye sambandhicc tīrccayāyuṁ nāṁ niṅṅaḷkk tākkītu nalkiyirikkunnu. manuṣyan tanṟe iru karaṅṅaḷuṁ ceytuveccat nēākkikkāṇuṁ dinaṁ. ann satyaniṣēdhi paṟayuṁ: \"ñān maṇṇāyirunneṅkil etra nannāyēne.”"
        }
    ]
}