{
    "chapter": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "kuttuvākk paṟayunnavaneākkeyuṁ nāśaṁ! avahēḷikkunnavannuṁ"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "avanēā, dhanaṁ orukkūṭṭukayuṁ at eṇṇikkaṇakkākkukayuṁ ceyyunnavanāṇ"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "dhanaṁ tanne anaśvaranākkiyatāyi avan karutunnu"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "sanśayaṁ vēṇṭa; avan hutvamayil eṟiyappeṭuka tanne ceyyuṁ"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "hutvama entenn ninakkaṟiyāmēā"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "allāhuvinṟe kattippaṭaruṁ narakattīyāṇat"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "hr̥dayaṅṅaḷilēkk kattippaṭarunnat"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "at avaruṭe mēl mūṭiyirikkuṁ"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "nāṭṭinirttiya stambhaṅṅaḷil avar bandhitarāyirikke"
        }
    ]
}