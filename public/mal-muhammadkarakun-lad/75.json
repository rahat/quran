{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "uyirtteḻunnēlp nāḷukeāṇṭ ñān satyaṁ ceyyunnu"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "kuṟṟappeṭuttunna manas'sākṣiye kkeāṇṭuṁ ñān satyaṁ ceyyunnu"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "manuṣyan vicārikkunnuvēā, namukk avanṟe ellukaḷe orumiccukūṭṭānāvillenn"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "ennāl, nāṁ avanṟe viralttumpupēāluṁ kr̥tyamāyi nirmikkān pēānnavanāṇ"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "enniṭṭuṁ manuṣyan tanṟe varuṅkāla jīvitattil durvr̥ttikaḷ ceyyānuddēśikkunnu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "ī uyirtteḻunnēlpu dinaṁ ennāṇenn avan cēādikkunnu"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "kaṇṇ añcippēāvukayuṁ"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "candran keṭṭupēāvukayuṁ"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "sūryacandranmār orumiccu kūṭṭappeṭukayuṁ ceytāl"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "ann ī manuṣyan paṟayuṁ: eviṭēkkāṇ ōṭi rakṣappeṭukayenn"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "illa! oru rakṣayumilla"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "ann ninṟe nāthanṟe munnil tanne cennu nilkkēṇṭivaruṁ"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "annāḷil manuṣyan tān ceyyarutāttat ceytatine sambandhiccuṁ ceyyēṇṭat ceyyāttatineppaṟṟiyuṁ aṟiyunnu"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "ennalla, ann manuṣyan tanikketire tanne teḷivāyittīrunnu"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "avan enteākke oḻikaḻivu samarppiccāluṁ śari"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "khur'ān peṭṭenn manaḥpāṭhamākkānāyi nī nāvu piṭappikkēṇṭatilla"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "atinṟe samāharaṇavuṁ at ōtittaraluṁ nam'muṭe bādhyatayāṇ"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "aṅṅane nāṁ ōtittannāl ā pārāyaṇatte nī pintuṭaruka"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "tuṭarnnuḷḷa atinṟe viśadīkaraṇavuṁ nam'muṭe cumatala tanne"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "ennāl aṅṅaneyalla; niṅṅaḷ tālkkālika nēṭṭaṁ keātikkunnu"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "paralēākatte avagaṇikkukayuṁ ceyyunnu"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "ann cila mukhaṅṅaḷ prasannaṅṅaḷāyirikkuṁ"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "taṅṅaḷuṭe nāthane nēākkikkeāṇṭirikkunnavayuṁ"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "maṟṟu cila mukhaṅṅaḷann kaṟuttiruṇṭavayāyirikkuṁ"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "taṅṅaḷuṭe mēl van vipatt vannu vīḻān pēāvukayāṇenn ava aṟiyunnu"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "mātramalla; jīvan teāṇṭakkuḻiyilettukayuṁ"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "mantrikkānāruṇṭ enna cēādyamuyarukayuṁ"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "it tanṟe vērpāṭāṇenn manas'silāvukayuṁ"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "kaṇaṅkālukaḷ tam'mil kūṭiccērnn keṭṭippiṇayukayuṁ ceyyumpēāḷ"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "atāṇ ninṟe nāthaṅkalēkk nayikkappeṭunna dinaṁ"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "ennāl avan satyamaṅgīkariccilla. namaskariccatumilla"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "maṟicc, niṣēdhikkukayuṁ pintiriyukayuṁ ceytu"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "enniṭṭ ahaṅkārattēāṭe svantakkāruṭe aṭuttēkk pēāyi"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "atutanneyāṇ ninakk ēṟṟaṁ paṟṟiyatuṁ ucitavuṁ"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "ate, atutanneyāṇ ninakkēṟṟaṁ paṟṟiyatuṁ ucitavuṁ"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "manuṣyan karutunnēā; avane veṟuteyaṅṅ viṭṭēkkumenn"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "avan, teṟiccu vīṇa nis'sāramāya orindriyakaṇaṁ mātramāyirunnillē"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "pinneyat bhrūṇamāyi. anantaraṁ allāhu avane sr̥ṣṭiccu sanvidhāniccu"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "aṅṅane avanatil ninn āṇuṁ peṇṇumāyi iṇakaḷe uṇṭākki"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "ateākke ceytavan mariccavare vīṇṭuṁ jīvippikkān pēānnavanallennēā"
        }
    ]
}