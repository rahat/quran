{
    "chapter": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "aṇiyaṇiyāyi nirannunilkkunnavar satyaṁ"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "pinne śaktamāyi ceṟuttunilkkunnavartanne satyaṁ"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "enniṭṭu kīrttanaṁ ceāllunnavar satyaṁ"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "tīrccayāyuṁ niṅṅaḷuṭeyellāṁ daivaṁ ēkanāṇ"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "ākāśabhūmikaḷuṭeyuṁ avaykkiṭayiluḷḷavayuṭeyuṁ nāthanāṇavan. udaya sthānaṅṅaḷuṭe parirakṣakan"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "aṭuttuḷḷa ākāśatte nāṁ nakṣatrālaṅkāraṅṅaḷāl manēāharamākkiyirikkunnu"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "dhikkāriyāya ētu cekuttānilninnuṁ atine surakṣitamākkiyirikkunnu"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "atyunnata sabhayile sansāraṁ cevikeāṭuttukēḷkkān ī cekuttānmārkkāvilla. nānābhāgattuninnuṁ avar eṟiññēāṭikkappeṭuṁ"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "bahiṣkr̥tarāyikkeāṇṭ‌; avarkk aṟutiyillātta śikṣayuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "ennāl, avarilāreṅkiluṁ atilninn vallatuṁ taṭṭiyeṭukkukayāṇeṅkil tīkṣṇamāya tījjvāla avane pintuṭaruṁ"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "atināl nī avarēāṭ cēādikkuka: ivare sr̥ṣṭikkunnatāṇēā kūṭutal prayāsakaraṁ, atēā nāṁ uṇṭākkiya maṟṟuḷḷavaye sr̥ṣṭikkunnatēā? tīrccayāyuṁ nāmivare sr̥ṣṭiccat paṟṟippiṭikkunna kaḷimaṇṇil ninnāṇ"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "ennāl, ninakk vismayaṁ tēānnunnu. avarēā atine parihasikkukayuṁ ceyyunnu"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "avare upadēśiccāluṁ avaratēkkuṟiccālēācikkunnilla"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "ēteāru dr̥ṣṭāntaṁ kaṇṭāluṁ avaratine pucchiccutaḷḷunnu"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "avar paṟayunnu: \"itu prakaṭamāya jālavidya tanne"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "nāṁ maricc maṇṇuṁ ellumāyikkaḻiññāl vīṇṭuṁ uyirtteḻunnēlpikkappeṭumennēā"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "nam'muṭe pūrva pitākkaḷuṁ uyirtteḻunnēlkkumennēā"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "paṟayuka: ate. aṅṅane sambhavikkuṁ. niṅṅaḷann paṟṟe patitarāyittīruṁ"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "ateāru ghēāragarjanaṁ mātramāyirikkuṁ. appēāḻēkkuṁ avar kaṇṇutuṟann nēākkunnavarāyittīruṁ"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "avar paṟayuṁ: \"ayyēā, namukk nāśaṁ! it pratiphalattinṟe dinaṁ tanne"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "ate, niṅṅaḷ taḷḷippaṟañña ā vidhittīrppinṟe dinaṁ tanneyāṇit"
        },
        {
            "chapter": 37,
            "verse": 22,
            "text": "akramaṁ pravartticcavareyuṁ avaruṭe iṇakaḷeyuṁ avar ārādhiccirunnavayeyuṁ niṅṅaḷ orumiccukūṭṭuka"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "allāhuvekkūṭāte; enniṭṭavareyellāṁ niṅṅaḷ narakattilēkkuḷḷa vaḻiyil nayikkuka\" enna kalpanayuṇṭākuṁ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "avareyeānn nirttū avare cēādyaṁ ceyyēṇṭatuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "alla; niṅṅaḷkkentupaṟṟi? niṅṅaḷ parasparaṁ sahāyikkunnillallēā"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "ennāl avarinn kīḻeātuṅṅiyavarāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "avar cēritiriññ parasparaṁ cēādyaṁ ceyyuṁ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "anuyāyikaḷ paṟayuṁ: \"niṅṅaḷ nanma camaññ ñaṅṅaḷuṭe aṭutt vannirunnuvallēā"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "nētākkaḷ maṟupaṭi paṟayuṁ: \"niṅṅaḷ svayantanne satyaviśvāsikaḷāyirunnilla"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "ñaṅṅaḷkk niṅṅaḷuṭemēl oradhikāravumuṇṭāyirunnillallēā. ennalla; niṅṅaḷ svayantanne atikramikaḷāya janamāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "aṅṅane nam'muṭe nāthanṟe śikṣayuṭe vacanaṁ satyamāyi pularnnirikkunnu. tīrccayāyuṁ nāmatanubhavikkān pēāvukayāṇ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "aṅṅane ñaṅṅaḷ niṅṅaḷe vaḻiteṟṟiccu. tīrccayāyuṁ ñaṅṅaḷ svayaṁ vaḻipiḻaccavarāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "niścayamāyuṁ ann avarellāṁ śikṣayil paṅkāḷikaḷāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "uṟappāyuṁ kuṟṟavāḷikaḷēāṭ nāṁ aṅṅanetanneyāṇ ceyyuka"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "“allāhuvallāte daivamille”nn avarēāṭ paṟaññāl avar ahaṅkārattēāṭe mukhaṁ tirikkumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "avariṅṅane cēādikkumāyirunnu: \"bhrāntanāya oru kavikku vēṇṭi ñaṅṅaḷ ñaṅṅaḷuṭe daivaṅṅaḷe upēkṣikkaṇamennēā"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "ennāl satyavumāyāṇ addēhaṁ vannettiyat. daivadūtanmāreyellāṁ addēhaṁ śarivecciṭṭumuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "tīrccayāyuṁ niṅṅaḷ nēāvēṟiya śikṣa anubhavikkēṇṭavar tanne"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "niṅṅaḷ pravartticcukeāṇṭirunnatinṟe pratiphalaṁ mātramē niṅṅaḷkku nalkukayuḷḷū"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷkkeāḻike"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "avarkkāṇ aṟiyappeṭṭa vibhavaṅṅaḷuḷḷat"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "palataraṁ paḻaṅṅaḷ. avaraviṭe ādaraṇīyarumāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "anugr̥hītamāya svargīyārāmaṅṅaḷil"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "mañcaṅṅaḷil abhimukhamāyi irikkunnavarāyirikkuṁ avar"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "saviśēṣamāya uṟavuveḷḷaṁ niṟacca kēāppakaḷ avarkkiṭayil kaṟaṅṅikkeāṇṭirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "veḷuttatuṁ kuṭikkunnavarkk atyadhikaṁ āsvādyakaravumāya pānīyaṁ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "at dēhattineāṭṭuṁ dēāṣanvaruttilla. atuvaḻi avarkk lahari bādhikkukayumilla"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "avaruṭe aṭutt nēāṭṭaṁ niyantrikkunnavaruṁ viśālākṣikaḷumāya kulīnakaḷuṇṭāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "sūkṣikkappeṭṭa muṭṭakaḷ pēālirikkuṁ avar"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "avar parasparaṁ abhimukhīkaricc an'yēān'yaṁ anvēṣiccukeāṇṭirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "avarileārāḷ paṟayuṁ: \"tīrccayāyuṁ enikkeāru kūṭṭukāranuṇṭāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "avan cēādikkāṟuṇṭāyirunnu: “nī paralēākatte śarivekkunnavanāṇēā"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "“nāṁ maricc maṇṇuṁ ellumāyi māṟiyāluṁ namukk nam'muṭe karmaphalaṁ kiṭṭumenna vādatte aṅgīkarikkunnavanuṁ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "tuṭarnn ayāḷ paṟayuṁ: \"niṅṅaḷ ā satyaniṣēdhiye ettinēākkunnuṇṭēā"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "aṅṅane addēhamavane ettinēākkuṁ. appēāḷ narakattinṟe naṭuvilavane kāṇuṁ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "addēhamavanēāṭ paṟayuṁ: \"allāhu tanne satyaṁ. nīyenneyuṁ naśippikkumāyirunnēne"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "enṟe nāthanṟe anugrahamillāyirunneṅkil ñānuṁ narakattil hājarākkappeṭunnavaril peṭumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "ini namukk maraṇamillallēā"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "nam'muṭe ādyatte ā maraṇamallāte. ini nāṁ śikṣikkappeṭukayumilla"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "tīrccayāyuṁ itutanneyāṇ mahattāya vijayaṁ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "itupēāluḷḷa nēṭṭaṅṅaḷkkuvēṇṭiyāṇ paṇiyeṭukkunnavareākkeyuṁ śramikkēṇṭat"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "itēā atēā sakhūṁ maramēā ētāṇ uttamamāya salkkāraṁ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "tīrccayāyuṁ nāmatine akramikaḷkkeāru parīkṣaṇamākkiyirikkunnu"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "narakattinṟe aṭittaṭṭilninn muḷaccupeāṅṅunna maramāṇat"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "atinṟe kulakaḷ cekuttānmāruṭe talakaḷ pēālirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "narakavāsikaḷ at tinnuṁ. aṅṅane atukeāṇṭ avar vayaṟ niṟakkuṁ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "tuṭarnn avarkk atinumīte kuṭikkān cuṭṭupeāḷḷunna veḷḷamāṇ kiṭṭuka"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "pinne tīrccayāyuṁ avaruṭe maṭakkaṁ narakattīyilēkkutanne"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "sanśayamilla; avar taṅṅaḷuṭe pūrvikare kaṇṭettiyat tīrttuṁ vaḻipiḻaccavarāyāṇ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "enniṭṭuṁ avar ā pūrvikaruṭe kālppāṭukaḷ tanne tālparyattēāṭe pintuṭarnnu"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "avarkkumumpe avaruṭe pūrvikarilēṟe pēruṁ vaḻipiḻaccirunnu"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "avaril nāṁ munnaṟiyippukāre ayacciṭṭuṇṭāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "nēākkū; ā munnaṟiyipp nalkappeṭṭavaruṭe antyaṁ evvidhamāyirunnuvenn"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷuṭēteāḻike"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "nūh nam'mēāṭ prārthiccu. appēāḷ uttaraṁ nalkiyavan etra anugr̥hītan"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "addēhatteyuṁ addēhattinṟe kūṭeyuḷḷavareyuṁ nāṁ van durantattilninn rakṣiccu"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "addēhattinṟe santatikaḷe nāṁ bhūmiyil bākkiyākki"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "pinnāle vannavaril addēhattinṟe salkkīrtti nilanirtti"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "muḻuvan lēākavāsikaḷiluṁ nūhin samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "tīrccayāyuṁ avvidhamāṇ nāṁ sadvr̥ttarkk pratiphalaṁ nalkuka"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "sanśayamilla; addēhaṁ nam'muṭe satyaviśvāsikaḷāya dāsanmāril peṭṭavanāṇ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "pinnīṭ maṟṟuḷḷavare nāṁ mukkikkeānnu"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "uṟappāyuṁ addēhattinṟe kakṣiyilpeṭṭavan tanneyāṇ ibṟāhīṁ"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "śud'dhahr̥dayanāyi addēhaṁ tanṟe nāthanṟe sannidhiyil cenna sandarbhaṁ"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "addēhaṁ tanṟe pitāvinēāṭuṁ janatayēāṭuṁ cēādiccu: \"niṅṅaḷ entineyāṇ pūjiccukeāṇṭirikkunnat"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "allāhuvekkūṭāte vyājadaivaṅṅaḷe pūjikkānāṇēā niṅṅaḷāgrahikkunnat"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "appēāḷ prapañcanāthaneppaṟṟi niṅṅaḷuṭe vicāramentāṇ"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "pinne addēhaṁ nakṣatraṅṅaḷuṭe nēre nēākki"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "enniṭṭiṅṅane paṟaññu: \"enikku sukhamilla"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "appēāḷ avar addēhatte viṭṭ piriññupēāyi"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "aṅṅane addēhaṁ avaruṭe daivaṅṅaḷuṭenēre tiriññu. addēhaṁ cēādiccu: \"niṅṅaḷ tinnunnillē"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "niṅṅaḷkkentupaṟṟi? niṅṅaḷeānnuṁ miṇṭunnillallēā"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "pinnīṭ addēhaṁ avayuṭe nēre nīṅṅi. aṅṅane tanṟe valaṅkaikeāṇṭ avaye veṭṭivīḻtti"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "āḷukaḷ addēhattinṟe nēre pāññaṭuttu"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "addēhaṁ cēādiccu: \"niṅṅaḷ tanne cettiyuṇṭākkunnavayeyāṇēā niṅṅaḷ pūjikkunnat"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "allāhuvāṇallēā niṅṅaḷeyuṁ niṅṅaḷ nirmikkunnavayeyuṁ sr̥ṣṭiccat"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "avar parasparaṁ paṟaññu: \"ivanuvēṇṭi oru tīkkuṇḍamuṇṭākkuka. enniṭṭivane kattikkāḷunna tiyyileṟiyuka"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "aṅṅane avaraddēhattinetire tantraṁ menaññu. pakṣē, nāmavare paṟṟe patitarākki"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "ibṟāhīṁ paṟaññu: \"ñānenṟe nāthanṟe aṭuttēkku pēāvukayāṇ. avanenne nērvaḻiyil nayikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "enṟe nāthā, enikku nī saccaritanāya oru makane nalkēṇamē"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "appēāḷ nāṁ addēhatte sahanaśāliyāya oru putrane sambandhicca śubhavārtta aṟiyiccu"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "ā kuṭṭi addēhattēāṭeāppaṁ enteṅkiluṁ ceyyāvunna prāyamettiyappēāḷ addēhaṁ paṟaññu: \"enṟe priya mēānē, ñān ninne aṟukkunnatāyi svapnaṁ kaṇṭirikkunnu. atināl nēākkū; ninṟe abhiprāyamentāṇ.\" avan paṟaññu: \"enṟuppā, aṅṅ kalpana naṭappākkiyāluṁ. allāhu icchicceṅkil kṣamāśīlaruṭe kūṭṭattil aṅṅaykkenne kāṇāṁ"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "aṅṅane avariruvaruṁ kalpanakku vaḻaṅṅi. addēhamavane cericcu kiṭatti"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "appēāḷ nāṁ addēhatte viḷiccu: \"ibṟāhīmē"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "sanśayamilla; nī svapnaṁ sākṣālkkariccirikkunnu.\" avvidhamāṇ nāṁ saccaritarkk pratiphalaṁ nalkunnat"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "uṟappāyuṁ iteāru vyaktamāya parīkṣaṇaṁ tanneyāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "nāṁ avanupakaraṁ baliyarppikkānāyi mahattāya oru mr̥gatte nalki"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "pinmuṟakkāril addēhattinṟe salkkīrtti nilanirttukayuṁ ceytu"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "ibṟāhīminu samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "ivvidhamāṇ nāṁ saccaritarkk pratiphalaṁ nalkunnat"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "sanśayamilla; addēhaṁ nam'muṭe satyaviśvāsikaḷāya dāsanmāril peṭṭavanāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "addēhatte nāṁ, saccaritarilpeṭṭa pravācakanākān pēākunna is'hākhinṟe jananatte sambandhiccuṁ śubhavārtta aṟiyiccu"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "addēhatteyuṁ is'hākhineyuṁ nāṁ anugrahiccu. avariruvaruṭeyuṁ santānaṅṅaḷil nallavaruṇṭ. tannēāṭutanne vyaktamāya atikramaṁ ceyyunnavarumuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "niścayamāyuṁ mūsāyēāṭuṁ hāṟūnēāṭuṁ nāṁ aḷavaṟṟa audāryaṁ kāṇiccu"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "avariruvareyuṁ avaruṭe janatayeyuṁ keāṭunvipattil ninn rakṣappeṭutti"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "avare nāṁ sahāyiccu. aṅṅane avar vijayikaḷāyittīrnnu"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "avariruvarkkuṁ satyaṁ vērtiriccu kāṇikkunna vēdapustakaṁ nalki"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "iruvareyuṁ nāṁ nērvaḻiyil nayikkukayuṁ ceytu"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "pinmuṟakkāril nāṁ avaruṭe salkkīrtti nilanirtti"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "mūsāykkuṁ hāṟūnnuṁ samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "avvidhamāṇ nāṁ saccaritarkk pratiphalaṁ nalkunnat"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "avariruvaruṁ satyaviśvāsikaḷāya nam'muṭe dāsanmāril peṭṭavarāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "sanśayamilla; ilyāsuṁ daivadūtanmārileārāḷāṇ"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "addēhaṁ tanṟe janatayēāṭu cēādicca sandarbhaṁ: \"niṅṅaḷ bhaktipularttunnillē"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "niṅṅaḷ ba'aline viḷicc prārthikkukayāṇēā? ēṟṟavuṁ śrēṣṭhanāya sr̥ṣṭikarttāvine upēkṣikkukayuṁ"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "niṅṅaḷuṭeyuṁ niṅṅaḷuṭe pūrva pitākkaḷuṭeyuṁ nāthanāya allāhuve"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "appēāḷ avaraddēhatte taḷḷippaṟaññu. atinālavar śikṣaykk keāṇṭuvarappeṭuṁ; tīrcca"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷeyeāḻike"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "pinmuṟakkāril addēhattinṟe salkkīrtti nāṁ nilanirtti"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "ilyāsin samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "avvidhamāṇ nāṁ saccaritarkk pratiphalaṁ nalkunnat"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "sanśayamilla; addēhaṁ nam'muṭe satyaviśvāsikaḷāya dāsanmāril peṭṭavanāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "lūtvuṁ daivadūtarileāruvantanne"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "addēhatteyuṁ addēhattinṟe muḻuvan āḷkkāreyuṁ nāṁ rakṣappeṭutti"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "piṟakil māṟininna oru kiḻaviye oḻike"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "pinne maṟṟuḷḷavareyellāṁ nāṁ naśippiccu"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "tīrccayāyuṁ niṅṅaḷ prabhātavēḷayil avaruṭe arikilūṭe kaṭannupēākunnu"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "vaikunnēravuṁ. enniṭṭuṁ niṅṅaḷeānnuṁ cinticcaṟiyunnillē"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "sanśayamilla; yūnusuṁ daivadūtanmārileāruvan tanne"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "bhāranniṟacca kappalilēkk addēhaṁ oḷiccukayaṟiyatēārkkuka"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "aṅṅane addēhaṁ naṟukkeṭuppil paṅkāḷiyāyi. atēāṭe puṟantaḷḷappeṭṭavarileāruvanāyi"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "appēāḷ addēhatte matsyaṁ viḻuṅṅi. addēhaṁ ākṣēpārhanāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "addēhaṁ allāhuvinṟe viśud'dhi vāḻttunnavaril peṭṭavanāyirunnilleṅkil"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "niścayamāyuṁ uyirtteḻunnēlpunāḷ vareyuṁ atinṟe vayaṟṟil kaḻiyēṇṭivarumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "pinnīṭ addēhatte nāṁ kaṭalēāratte oru veḷipradēśattēkku taḷḷi. addēhamappēāḷ rēāgiyāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "addēhattinu nāṁ oru vaḷḷicceṭi muḷappiccukeāṭuttu"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "addēhatte nāṁ oru lakṣamēā atilēṟeyēā varunna vampicca orāḷkkūṭṭattilēkkayaccu"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "atēāṭe avarellāṁ viśvasiccu. atināl oru niścita kālanvare nāmavarkk sukhajīvitaṁ nalki"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "nabiyē, ī janattēāṭeānn cēādiccu nēākkū: \"ninṟe nāthann peṇmakkaḷuṁ avarkk āṇmakkaḷumāṇēā enn"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "atalla; nāṁ malakkukaḷe strīkaḷāyi sr̥ṣṭiccuvennēā? avaratin sākṣikaḷāyirunnēā"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "aṟiyuka: avarippaṟayunnat avar keṭṭiccamaccuṇṭākkiyatil peṭṭatāṇ"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "“allāhu makkaḷe janippiccu”vennat. sanśayamilla; avar kaḷḷaṁ paṟayunnavar tanneyāṇ"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "allāhu tanikkāyi āṇmakkaḷekkāḷ peṇmakkaḷe teraññeṭuttennēā"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "niṅṅaḷkkentupaṟṟi? eṅṅaneyeākkeyāṇ niṅṅaḷ tīrppukalpikkunnat"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "niṅṅaḷ cinticcaṟiyunnillē"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "atalleṅkil niṅṅaḷuṭe vaśaṁ vyaktamāya valla pramāṇavumuṇṭēā"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "eṅkil niṅṅaḷ niṅṅaḷuṭe ā rēkhayiṅṅu keāṇṭuvarika. niṅṅaḷ satyavānmāreṅkil"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "ikkūṭṭar allāhuvinuṁ jinnukaḷkkumiṭayil kuṭumbabandhamārēāpiccirikkunnu. ennāl jinnukaḷkkaṟiyāṁ; taṅṅaḷ śikṣakk hājarākkappeṭumenn"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "avarārēāpikkunnatil ninnellāṁ allāhu etrayēā pariśud'dhanāṇ"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷ ivarilpeṭṭavaralla"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "ennāl tīrccayāyuṁ niṅṅaḷkkuṁ niṅṅaḷuṭe ārādhyarkkuṁ"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "allāhuvinetiril āreyuṁ kuḻappattilākkānāvilla"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "kattikkāḷunna narakattīyil venteriyēṇṭavareyallāte"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "nirṇitamāya sthānamillātta āruntanne ñaṅṅaḷililla"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "tīrccayāyuṁ ñaṅṅaḷ sēvanattināyi aṇininnavarāṇ"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "niścayamāyuṁ ñaṅṅaḷ allāhuvinṟe viśud'dhi vāḻttunnavarumāṇ"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "ikkūṭṭar paṟayāṟuṇṭāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "mungāmikaḷkku kiṭṭiya valla udbēādhanavuṁ ñaṅṅaḷuṭe vaśaṁ uṇṭāyirunneṅkil"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "ñaṅṅaḷ allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷākumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "enniṭṭuṁ avaritine taḷḷippaṟayukayāṇuṇṭāyat. atināl aṭuttutanne avarellāṁ aṟiyuṁ"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "dūtanmārāyi ayacca nam'muṭe dāsanmāruṭe kāryattil nam'muṭe kalpana nēratte vannukaḻiññiṭṭuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "uṟappāyuṁ avarkk sahāyaṁ labhikku\"menn"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "tīrccayāyuṁ nam'muṭe sain'yaṁ tanneyāṇ vijayikkunnavar"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "atināl oravadhivare nī avaril ninn māṟinilkkuka"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "avare nī śrad'dhiccukeāṇṭirikkuka. aṭuttutanne avarellāṁ kaṇṭaṟiññukeāḷḷuṁ"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "nam'muṭe śikṣakkuvēṇṭiyāṇēā ivariṅṅane tiṭukkaṁ kūṭṭunnat"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "ennāl ā śikṣa avaruṭe muṟṟatt vanniṟaṅṅiyāl ā tākkītu nalkappeṭṭavaruṭe prabhātaṁ etra cīttayāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "atināl oravadhivare avarilninn māṟinilkkuka"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "nī avare śrad'dhiccukeāṇṭirikkuka. aṭuttutanne avarellāṁ kaṇṭaṟiññukeāḷḷuṁ"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "pratāpiyāya ninṟe nāthan, avarārēāpikkunnatil ninnellāṁ etrayēā pariśud'dhanāṇ"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "daivadūtanmārkk samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "prapañcanāthanāya allāhuvin stuti"
        }
    ]
}