{
    "chapter": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "nakṣatraṁ sākṣi. at astamikkumpēāḷ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "niṅṅaḷuṭe kūṭṭukāranāya pravācakan vaḻiteṟṟiyiṭṭilla. durmārgiyāyiṭṭumilla"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "addēhaṁ tēānniyapēāle sansārikkunnumilla"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "ī sandēśaṁ addēhattinu nalkappeṭṭa divya bēādhanaṁ mātramāṇ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "addēhatte at abhyasippiccat ēṟe karuttanāṇ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "prabalanāya oru vyakti. aṅṅane avan nivarnnuninnu"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "atyunnatamāya cakravāḷattilāyikkeāṇṭ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "pinne avan aṭuttuvannu. vīṇṭuṁ aṭuttu"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "aṅṅane raṇṭu villēāḷamēā atil kūṭutalēā aṭutt nilakeāṇṭu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "appēāḷ, allāhu tanṟe dāsan nalkēṇṭa sandēśaṁ avan bēādhanamāyi nalki"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "addēhaṁ kaṇṇukeāṇṭu kaṇṭatine manas's kaḷavākkiyilla"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "enniṭṭuṁ ā pravācakan nēril kaṇṭatinekkuṟicc niṅṅaḷ addēhattēāṭ tarkkikkukayāṇēā"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "maṟṟeāru iṟaṅṅivaravu vēḷayiluṁ addēhaṁ jibrīline kaṇṭiṭṭuṇṭ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "sidṟatul muntahāyuṭe aṭutt vecc"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "atinaṭuttāṇ abhayasthānamāya svargaṁ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "annēraṁ sidṟaye āvaraṇaṁ ceyyunna atigambhīramāya prabhāvaṁ atine āvaraṇaṁ ceyyunnuṇṭāyirunnu"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "appēāḷ pravācakanṟe dr̥ṣṭi teṟṟippēāyilla. paridhi laṅghiccumilla"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "uṟappāyuṁ addēhaṁ tanṟe nāthanṟe mahattāya cila dr̥ṣṭāntaṅṅaḷ kaṇṭiṭṭuṇṭ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "“lāti”neyuṁ “us'sa”yeyuṁ sambandhicc niṅṅaḷ cinticcu nēākkiyiṭṭuṇṭēā"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "kūṭāte mūnnāmatāyuḷḷa “manāti” nekkuṟiccuṁ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "niṅṅaḷkk āṇuṁ allāhuvin peṇṇuṁ, allē"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "eṅkil it tīrttuṁ nīti rahitamāya vibhajanaṁ tanne"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "yathārthattil ava, niṅṅaḷuṁ niṅṅaḷuṭe pūrva pitākkaḷuṁ viḷicca cila pērukaḷallāteānnumalla. allāhu ivaykkeānnuṁ oru teḷivuṁ nalkiyiṭṭilla. ūhatteyuṁ dēhēchayeyuṁ mātramāṇ avar pinpaṟṟunnat. niścayaṁ, avarkk taṅṅaḷuṭe nāthanil ninnuḷḷa nērvaḻi vannettiyiṭṭuṇṭ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "atalla; manuṣyan keāticcateākkettanneyāṇēā avann kiṭṭuka"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "ennāl aṟiyuka: ī lēākavuṁ paralēākavuṁ allāhuvinṟētāṇ"
        },
        {
            "chapter": 53,
            "verse": 26,
            "text": "mānatt etra malakkukaḷuṇṭ! avaruṭe śupārśakaḷeānnuṁ oṭṭuṁ upakarikkukayilla. allāhu ichikkukayuṁ iṣṭappeṭukayuṁ ceyyunnavarkk avan anumati nalkiya śēṣamallāte"
        },
        {
            "chapter": 53,
            "verse": 27,
            "text": "paralēāka viśvāsamillāttavar malakkukaḷe strīnāmaṅṅaḷilāṇ viḷikkunnat"
        },
        {
            "chapter": 53,
            "verse": 28,
            "text": "avarkk atēkkuṟicc oraṟivumilla. avar ūhatte mātraṁ pinpaṟṟukayāṇ. ūhamēā, satyattin oru prayēājanavuṁ ceyyukayilla"
        },
        {
            "chapter": 53,
            "verse": 29,
            "text": "atināl nam'me ōrkkunnatil ninn pintiriyukayuṁ aihika jīvitasukhattinappuṟameānnuṁ lakṣyamākkātirikkukayuṁ ceyyunnavare avaruṭe pāṭṭin viṭuka"
        },
        {
            "chapter": 53,
            "verse": 30,
            "text": "avarkku nēṭānāya aṟiv atumātramāṇ. tanṟe mārgattilninn teṟṟiyavar ārenn ēṟṟaṁ nannāyaṟiyunnavan ninṟe nāthanāṇ. nērvaḻi prāpiccavareppaṟṟi nannāyaṟiyunnavanuṁ avan tanne"
        },
        {
            "chapter": 53,
            "verse": 31,
            "text": "ākāśa bhūmikaḷiluḷḷateākkeyuṁ allāhuvinṟētāṇ. durvr̥ttarkk avaruṭe pravarttanaṅṅaḷkkeātta pratiphalaṁ nalkānāṇat. sadvr̥ttarkk sadphalaṁ sam'mānikkānuṁ"
        },
        {
            "chapter": 53,
            "verse": 32,
            "text": "avarēā, van pāpaṅṅaḷuṁ nīcavr̥ttikaḷuṁ varjikkunnavarāṇ. keāccu vīḻcakaḷeāḻike. niścayamāyuṁ ninṟe nāthan udāramāyi peāṟukkunnavanāṇ. niṅṅaḷe bhūmiyil ninn sr̥ṣṭiccuṇṭākkiyappēāḻuṁ niṅṅaḷ niṅṅaḷuṭe mātākkaḷuṭe garbhāśayattil bhrūṇamāyirunnappēāḻuṁ niṅṅaḷeppaṟṟi nannāyaṟiyunnavan avan tanne. atināl niṅṅaḷ svayaṁ viśud'dhi camayātirikkuka. yathārtha bhaktanārenn nannāyaṟiyunnavan avan mātramāṇ"
        },
        {
            "chapter": 53,
            "verse": 33,
            "text": "ennāl satyattil ninn pintiriññavane nī kaṇṭēā"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "kuṟaccu keāṭuttu nirttiyavane"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "avanṟe vaśaṁ valla abhetika jñānavumuṇṭēā? aṅṅane avanat kaṇṭukeāṇṭirikkukayāṇēā"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "atalla; mūsāyuṭe ēṭukaḷiluḷḷavayeppaṟṟi avan aṟiv labhicciṭṭillē"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "uttaravāditvaṅṅaḷ pūrttīkaricca ibṟāhīminṟeyuṁ"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "atentennāl pāpabhāraṁ cumakkunna āruṁ aparanṟe pāpaccumaṭ pēṟukayilla"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "manuṣyan avan pravartticcatallāteānnumilla"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "tanṟe karmaphalaṁ tāmasiyāte avane kāṇikkuṁ"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "pinne avannatin tikavēāṭe pratiphalaṁ labhikkuṁ"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "oṭuvil okkeyuṁ ninṟe nāthaṅkalāṇ cennettuka"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "cirippikkunnatuṁ karayippikkunnatuṁ avanāṇ"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "marippikkunnatuṁ jīvippikkunnatuṁ avan tanne"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "iṇakaḷe-āṇineyuṁ peṇṇineyuṁ-sr̥ṣṭiccatuṁ avanāṇ"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "bījattilninn; at sravikkappeṭṭāl"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "vīṇṭuṁ jīvippikkukayennat avanṟe bādhyatayatre"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "aiśvaryamēkiyatuṁ tr̥ptanākkiyatuṁ avan tanne"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "puṇartaṁ nakṣatrattinṟe nāthanuṁ avanāṇ"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "perāṇika ād vargatte naśippiccatuṁ avan tanne"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "thamūdineyuṁ. avarilāreyuṁ bākkiveccilla"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "atinu mumpe nūhinṟe janatayeyuṁ avan naśippiccu. kāraṇaṁ, avar kaṭutta akramikaḷuṁ dhikkārikaḷumāyirunnu"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "kīḻmēl maṟiñña nāṭineyuṁ avan takarttu tarippaṇamākki"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "aṅṅane avanatine van vipattināl mūṭi"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "enniṭṭuṁ ninṟe nāthanṟe anugrahaṅṅaḷil ētineyāṇ nī sanśayikkunnat"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "ī pravācakan mumpuḷḷa tākkītukāruṭe kūṭṭattilpeṭṭa munnaṟiyippukāran tanne"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "varānirikkunna ā sambhavaṁ athavā lēākāvasānaṁ itā aṭuttettiyirikkunnu"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "atine taṭṭimāṟṟān allāhu allāte ārumilla"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "enniṭṭuṁ ī vacanatte sambandhicc niṅṅaḷ vismayaṁ kūṟukayāṇēā"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "niṅṅaḷ cirikkukayēā? karayātirikkukayuṁ"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "niṅṅaḷ tikañña aśrad'dhayil tanne kaḻiyukayāṇēā"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "atināl allāhuvin sāṣṭāṅgaṁ praṇamikkuka. avan mātraṁ vaḻippeṭukayuṁ ceyyuka"
        }
    ]
}