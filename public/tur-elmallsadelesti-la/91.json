{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun gunese ve parıltısına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "ona uydugunda aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "onu acıp ortaya cıkardıgında gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "onu sardıgında geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "goge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "yere ve onu doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "nefse ve onu duzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "sonra da ona bozuklugunu ve korunmasını ilham edene ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "gercek kurtulus bulmustur onu temizlikle parlatan"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gomen de ziyan etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlıgından inanmadı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "O en yaramazları fırladıgı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın elcisi onlara: «Allah´ın devesini ve onun sulanısını gozetin!» demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat ona inanmadılar da onu (deveyi) devirdiler. Rableri de gunahlarını baslarına geciri geciriverdi de o yeri duzleyiverdi"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Oyle ya, O, o isin sonundan korkacak degil ki"
        }
    ]
}