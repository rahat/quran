{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "O apacık bela (Kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o carpacak bela"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O carpacak belanın ne oldugunu ne bildirdi ki sana"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar cırpınıp yayılan pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da didilmis renkli yunler gibi atılacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste o zaman tartıları agır basan kimse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık hosnut olacagı bir hayat icindedir o"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat tartıları hafif gelen kimse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "O vakit onun anası Haviyedir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ve bildin mi, Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızısmıs bir atestir"
        }
    ]
}