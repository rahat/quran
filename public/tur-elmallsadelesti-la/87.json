{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Tesbih et Rabbinin A´la (yuce) ismini"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp duzene koyan Rabbinin"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir edip dogru yolu gosteren Rabbinin"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rabbin ki, mer´ayı, cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu karamsı, bir sel kusuguna cevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Bundan boyle sana Kur´an okutacagız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın diledigi baska; cunku O, acıgı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni en kolay yola muvaffak kılacagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Onun icin ogut ver, eger ogut fayda verirse"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygısı olan ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Pek bedbaht olan da ondan kacınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O ki, en buyuk atese yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra ne olecek onda, ne de hayat bulacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu felah bulmustur temizlenen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz, dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha hayırlı ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Haberiniz olsun, bu ilk sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim´in ve Musa´nın sahifelerinde"
        }
    ]
}