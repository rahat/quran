{
    "chapter": [
        {
            "chapter": 54,
            "verse": 1,
            "text": "ikterabeti-ssa`atu vensekka-lkamer"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "veiy yerav ayetey yu`ridu veyekulu sihrum mustemirr"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "vekezzebu vettebe`u ehvaehum vekullu emrim mustekirr"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "velekad caehum mine-l'embai ma fihi muzdecer"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "hikmetum baligatun fema tugni-nnuzur"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "fetevelle `anhum. yevme yed`u-dda`i ila sey'in nukur"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "husse`an ebsaruhum yahrucune mine-l'ecdasi keennehum ceradum muntesir"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "muhti`ine ile-dda`. yekulu-lkafirune haza yevmun `asir"
        },
        {
            "chapter": 54,
            "verse": 9,
            "text": "kezzebet kablehum kavmu nuhin fekezzebu `abdena vekalu mecnunuv vezducira"
        },
        {
            "chapter": 54,
            "verse": 10,
            "text": "fede`a rabbehu enni maglubun fentesir"
        },
        {
            "chapter": 54,
            "verse": 11,
            "text": "fefetahna ebvabe-ssemai bimaim munhemir"
        },
        {
            "chapter": 54,
            "verse": 12,
            "text": "vefeccerne-l'arda `uyunen felteke-lmau `ala emrin kad kudir"
        },
        {
            "chapter": 54,
            "verse": 13,
            "text": "vehamelnahu `ala zati elvahiv vedusur"
        },
        {
            "chapter": 54,
            "verse": 14,
            "text": "tecri bia`yunina. cezael limen kane kufira"
        },
        {
            "chapter": 54,
            "verse": 15,
            "text": "velekat teraknaha ayeten fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 16,
            "text": "fekeyfe kane `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 17,
            "text": "velekad yesserne-lkur'ane lizzikri fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 18,
            "text": "kezzebet `adun fekeyfe kane `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 19,
            "text": "inna erselna `aleyhim rihan sarsaran fi yevmi nahsim mustemirr"
        },
        {
            "chapter": 54,
            "verse": 20,
            "text": "tenzi`u-nnase keennehum a`cazu nahlim munka`ir"
        },
        {
            "chapter": 54,
            "verse": 21,
            "text": "fekeyfe kane `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 22,
            "text": "velekad yesserne-lkur'ane lizzikri fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 23,
            "text": "kezzebet semudu binnuzur"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "fekalu ebeseram minna vahiden nettebi`uhu inna izel lefi dalaliv vesu`ur"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "eulkiye-zzikru `aleyhi mim beynina bel huve kezzabun esir"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "seya`lemune gadem meni-lkezzabu-l'esir"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "inna mursilu-nnakati fitnetel lehum fertekibhum vastabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "venebbi'hum enne-lmae kismetum beynehum. kullu sirbim muhtedar"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "fenadev sahibehum fete`ata fe`akara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "fekeyfe kane `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "inna erselna `aleyhim sayhatev vahideten fekanu kehesimi-lmuhtezir"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "velekad yesserne-lkur'ane lizzikri fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "kezzebet kavmu lutim binnuzur"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "inna erselna `aleyhim hasiben illa ale lut. necceynahum bisehar"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "ni`metem min `indina. kezalike neczi men sekera"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "velekad enzerahum batsetena fetemarav binnuzur"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "velekad raveduhu `an dayfihi fetamesna a`yunehum fezuku `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "velekad sabbehahum bukraten `azabum mustekirr"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "fezuku `azabi venuzur"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "velekad yesserne-lkur'ane lizzikri fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 41,
            "text": "velekad cae ale fir`avne-nnuzur"
        },
        {
            "chapter": 54,
            "verse": 42,
            "text": "kezzebu biayatina kulliha feehaznahum ahze `azizim muktedir"
        },
        {
            "chapter": 54,
            "verse": 43,
            "text": "ekuffarukum hayrum min ulaikum em lekum beraetun fi-zzubur"
        },
        {
            "chapter": 54,
            "verse": 44,
            "text": "em yekulune nahnu cemi`um muntesir"
        },
        {
            "chapter": 54,
            "verse": 45,
            "text": "seyuhzemu-lcem`u veyuvellune-ddubura"
        },
        {
            "chapter": 54,
            "verse": 46,
            "text": "beli-ssa`atu mev`iduhum vessa`atu edha veemerr"
        },
        {
            "chapter": 54,
            "verse": 47,
            "text": "inne-lmucrimine fi dalaliv vesu`ur"
        },
        {
            "chapter": 54,
            "verse": 48,
            "text": "yevme yushabune fi-nnari `ala vucuhihim. zuku messe sekara"
        },
        {
            "chapter": 54,
            "verse": 49,
            "text": "inna kulle sey'in halaknahu bikader"
        },
        {
            "chapter": 54,
            "verse": 50,
            "text": "vema emruna illa vahidetun kelemhim bilbesar"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "velekad ehlekna esya`akum fehel mim muddekir"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "vekullu sey'in fe`aluhu fi-zzubur"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "vekullu sagiriv vekebirim mustetar"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "inne-lmuttekine fi cennativ veneher"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "fi mak`adi sidkin `inde melikim muktedir"
        }
    ]
}