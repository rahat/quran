{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "El-Kari´a : Kalblere korku salan o muthis gurultu"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Kari´a nedir"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Kari´a´nın ne oldugunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar (atesin cevresinde) dagılıp dokulen pervane gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da atılmıs renk renk yune benzeyecek"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Artık kimin tartıları agır basarsa"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, memnun olacagı bir hayattadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun yeri Haviye´dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Haviye´nin ne oldugunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "iyice kızısmıs bir atestir"
        }
    ]
}