{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku yaratan Rabbin adına"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "insanı bir yumurta hücresinden yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, çünkü Rabbin Sonsuz Kerem Sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "(insana) kalemi kullanmayı öğretendir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "insana bilmediğini belleten"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Gerçek şu ki insan fütursuzca azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "ne zaman kendini yeterli görse"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "oysa, herkes eninde sonunda Rabbine dönecektir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Hiç düşündün mü şu engellemeye kalkışanı"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "(Allah´ın) bir kulu(nu) namazdan"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Hiç düşündün mü o doğru yolda mıdır"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ya da Allah´a karşı sorumluluk bilinciyle yüklü mü"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Hiç düşündün mü onun hakikati yalanla(ma)yabileceğini ve sırtını (ona) dön(mey)ebileceğini"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O bilmez mi ki Allah (her şeyi) görür"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır, eğer vazgeçmezse, onu alnından tutup sürükleyeceğiz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "o yalancı, isyankar alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Bırak, kendi aklının (asılsız, düzmece) tavsiyelerini (yardımına) çağırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "(o zaman) Biz de semavi azap güçlerini çağırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır, ona kulak verme, ama (Allah´ın huzurunda) yere kapan ve (O´na) yakınlaş"
        }
    ]
}