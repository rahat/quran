{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kada sunce sjaj izgubi"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "i kada zvijezde popadaju"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "i kada se planine pokrenu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "i kada steone kamile bez pastira ostanu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "i kada se divlje zivotinje saberu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "i kada se mora vatrom napune"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "i kada se duse sa tijelima spare"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "i kada ziva sahranjena djevojcica bude upitana"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "zbog kakve krivice je umorena"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "i kada se listovi razdijele"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "i kada se nebo ukloni"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "i kada se Dzehennem raspali"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "i kada se Dzennet priblizi"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "svako ce saznati ono sto je pripremio"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "I kunem se zvijezdama - koje se skrivaju"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "koje se krecu i iz vida gube"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "i noci kad ona veo dize"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "i zorom kada dise"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kur´an je, zaista, kazivanje Izaslanika plemenitog"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "mocnog, od Gospodara svemira cijenjenog"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "kome se drugi potcinjavaju, tamo pouzdanog"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "A drug vas nije lud"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "on ga je na obzorju jasnom vidio"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "i, kada je u pitanju Objava, on nije skrt"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "i Kur´an nije prokletog sejtana govor"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "pa kuda onda idete"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Kur´an je samo pouka svjetovima"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "onome od vas koji hoce da je na pravom putu"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "a vi ne mozete nista htjeti ako to Allah, Gospodar svjetova, nece"
        }
    ]
}