{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Ngifunga ngosuku lokuvuka kwabafileyo"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Futhi ngifunga ngomphefumulo ozisolayo (ozithibayo)"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Ngakube umuntu uyacabanga ukuthi angeke siwahlanganise amathambo akhe"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Yebo siyakwazi ukuhlanganisa izihloko zeminwe yakho ngendlela enhle"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Kepha umuntu uthanda ukuthi aqhubeke nokona (enze izono)"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Uyabuza ukuthi luyofika nini usuku lokuvuka kwabafileyo"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Ngenkathi kuxhopheka ukubona"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Futhi inyanga iyonyamalala (iyofiphala)"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Futhi kuyohlanganiswa ilanga nenyanga"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "Ngalolosuku umuntu uyothi, “ikuphi (indawo) yokubalekela?”"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Lutho! Asikho isiphephelo"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "YiseNkosini yakho ngalolosuku lapho kuyoba yindawo yokuhlala (yokuphumula)"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "Uyotshenwa umuntu ngalolosuku ngalokho akuthumela ngaphambili nakushiya ngaphambili"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Kepha umuntu uyoba ufakazi obhekene naye"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Ngisho noma ngabe ebeka izizathu zakhe"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ungalunyakazisi ngalo (iQuran) ulimi lwakho ukuze usheshise ngayo"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Ngempela (umthwalo) ophezulu kwethu ukuyihlanganisa kanye nokufundwa kwayo"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Ngakho-ke ngenkathi siyifunda manjalo landela ukufundwa kwayo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Bese ngempela (umthwalo) ophezulu kwethu ukuchazwa kwayo"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Lutho! Kepha nithanda impilo esheshayo"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Futhi niyeka impilo ezayo"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Ubuso ngalolosuku buyokhazimula"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Bebheke eNkosini yabo"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Futhi obunye ubuso ngalolosuku buyohwaqabala"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Becabanga ukuthi bangase behlelwe yisehlo"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Lutho! Ngenkathi kufinyelela engqwababeni"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Futhi kuyothiwa, “ubani ozosindisa"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Futhi uyocabanga ukuthi ukwehlikana"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Futhi umlenze uyohlangana nomunye umlenze"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Ngalolosuku kuseNkosini ukuqhutshwa"
        }
    ]
}