{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب چادر آفتاب کو لپیٹ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "جب تارے گر پڑیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "جب پہاڑ حرکت میں آجائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "جب عنقریب جننے والی اونٹنیاں معطل کردی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "جب جانوروں کو اکٹھا کیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "جب دریا بھڑک اٹھیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "جب روحوں کو جسموں سے جوڑ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زندہ درگور لڑکیوں کے بارے میں سوال کیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ انہیں کس گناہ میں مارا گیا ہے"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب نامہ اعمال منتشر کردیئے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کا چھلکا اُتار دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب جہنمّ کی آگ بھڑکا دی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب جنّت قریب تر کردی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تب ہر نفس کو معلوم ہوگا کہ اس نے کیا حاضر کیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "تو میں ان ستاروں کی قسم کھاتا ہوں جو پلٹ جانے والے ہیں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "چلنے والے اورحُھپ جانے والے ہیں"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی قسم جب ختم ہونے کو آئے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی قسم جب سانس لینے لگے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "بے شک یہ ایک معزز فرشتے کا بیان ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "وہ صاحبِ قوت ہے اور صاحبِ عرش کی بارگاہ کا مکین ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "وہ وہاں قابل اطاعت اور پھر امانت دار ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور تمہارا ساتھی پیغمبر دیوانہ نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اور اس نے فرشتہ کو بلند اُفق پر دیکھا ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ غیب کے بارے میں بخیل نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ قرآن کسی شیطان رجیم کا قول نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "تو تم کدھر چلے جارہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ صرف عالمین کے لئے ایک نصیحت کا سامان ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "جو تم میں سے سیدھا ہونا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم لوگ کچھ نہیں چاہ سکتے مگریہ کہ عالمین کا پروردگار خدا چاہے"
        }
    ]
}