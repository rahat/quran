{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Liswejesyani lina lya Ambuje wenu (Allah) Wapenani kusyene"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Awala wawagumbile (chilichose) ni kuchikolosya"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Soni Awala wawapimiile (chilichose mwachiichiweela) ni kuchijongolela (ku yawachipimileyo)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Soni Awala waakumesya mopo"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Ni kuwusyusya kuwa wejumu wakupiililila"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Chitunsoomesye ni ngan'diwalila"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ikaweje yasachile Allah, chisimu Jwalakwe jukumanyililaga yakuonechela ni yayikasasisika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ni chitun'jepepachisye litala lyakwalukangana (lyakutendela yambone)"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Basi kumbusyani naga kumbusyako tikuwe kwakamuchisya"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Talikumbusye mundu jwaakun'jogopa (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ni takuwambale (mundu) jwakusakala nnope"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ajula jwatakajinjile ku Moto Wekulungwa"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Soni ngachija kumpata chiwa mwalakwemo, nambo soni ngaaja kuwa ni umi (wambone)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Pamasile paapundile mundu jwaliswejesye (ntima wakwe)"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ni akuwa ali nkulikumbuchila Lina lya Ambujegwe (pakulikolanga) aku achiswaliji"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Nambo wanganyammwe nkulongosya umi wa duniya"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Kutendaga Akhera ni jambone nnope soni jandamo"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Chisimu yalakweyi yili mu ikalakala yandanda"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ikalakala ya Ibrahima ni Musa"
        }
    ]
}