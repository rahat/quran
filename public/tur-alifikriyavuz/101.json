{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "(Dehşetiyle kalblere çarpacak) o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Ne bildirdi sana, nedir o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar, çırpınıp yayılan kelebekler (pervaneler) gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da atılmış renkli yünler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "İşte o vakit, kimin tartıları (iyilikleri) ağır gelmişse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Artık o, hoşnud bir hayattadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat kimin de tartıları (iyilikleri) hafif gelmişse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Artık onun yeri Haviye’dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Bildin mi Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        }
    ]
}