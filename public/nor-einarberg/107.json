{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Du har vel sett ham som fornekter dommen"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Det er han som støter bort den foreldreløse"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "og ikke oppfordrer til å gi den fattige mat"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Ve dem som holder bønn"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "men som ikke samler seg om den"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "som gjør det bare for syns skyld"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "som nekter å gi en håndsrekning"
        }
    ]
}