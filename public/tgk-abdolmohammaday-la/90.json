{
    "chapter": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Qasam ʙa in sahr! (Makka)"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Va tu dar in sahr halol xohi sud"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Va qasam ʙa padaru farzandoni u"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "ki odamiro, dar rancu mehnat ʙijofaridaem"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Ojo mepindorad, ki kas ʙar u qodir nagardad"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Megujad: «Mole farovonro xarc kardam!»"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Ojo mepindorad, ki kase uro nadidaast"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Ojo ʙaroi u du casm najofaridaem"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Va jak zaʙonu du laʙ"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Va du roh ʙa u dalolat nakardem"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Va u dar on guzargohi saxt qadam nanihod"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Va tu ci doni, ki guzargohi saxt cist"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Ozod kardani ʙanda ast"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "jo ta'om dodan dar ruzi qahti"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "xosa ʙa jatime, ki xesovand ʙosad"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "jo ʙa miskine xoknisin (muhtoc)"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Ba'd, az on az kasone ʙosad, ki imon ovardaand va jakdigarro ʙa saʙr vasijat kardaandu ʙa safqat"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Inho ahli sa'odatand"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Va kasone, ki ʙa ojoti Mo kofirand, ahli saqovatand (ʙadʙaxtijand)"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Nasiʙi onhost otase, ki az har su saras pusidaast"
        }
    ]
}