{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ عَمَّ یَتَسَاۤءَلُونَ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ ٱلنَّبَإِ ٱلۡعَظِیمِ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ٱلَّذِی هُمۡ فِیهِ مُخۡتَلِفُونَ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَیَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَیَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ مِهَـٰدࣰا"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَٱلۡجِبَالَ أَوۡتَادࣰا"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَخَلَقۡنَـٰكُمۡ أَزۡوَ ٰ⁠جࣰا"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَجَعَلۡنَا نَوۡمَكُمۡ سُبَاتࣰا"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَجَعَلۡنَا ٱلَّیۡلَ لِبَاسࣰا"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَجَعَلۡنَا ٱلنَّهَارَ مَعَاشࣰا"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَیۡنَا فَوۡقَكُمۡ سَبۡعࣰا شِدَادࣰا"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَجَعَلۡنَا سِرَاجࣰا وَهَّاجࣰا"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَأَنزَلۡنَا مِنَ ٱلۡمُعۡصِرَ ٰ⁠تِ مَاۤءࣰ ثَجَّاجࣰا"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخۡرِجَ بِهِۦ حَبࣰّا وَنَبَاتࣰا"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَجَنَّـٰتٍ أَلۡفَافًا"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "إِنَّ یَوۡمَ ٱلۡفَصۡلِ كَانَ مِیقَـٰتࣰا"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "یَوۡمَ یُنفَخُ فِی ٱلصُّورِ فَتَأۡتُونَ أَفۡوَاجࣰا"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَفُتِحَتِ ٱلسَّمَاۤءُ فَكَانَتۡ أَبۡوَ ٰ⁠بࣰا"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَسُیِّرَتِ ٱلۡجِبَالُ فَكَانَتۡ سَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "إِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَادࣰا"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطَّـٰغِینَ مَـَٔابࣰا"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لَّـٰبِثِینَ فِیهَاۤ أَحۡقَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَّا یَذُوقُونَ فِیهَا بَرۡدࣰا وَلَا شَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "إِلَّا حَمِیمࣰا وَغَسَّاقࣰا"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَاۤءࣰ وِفَاقًا"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "إِنَّهُمۡ كَانُوا۟ لَا یَرۡجُونَ حِسَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَكَذَّبُوا۟ بِـَٔایَـٰتِنَا كِذَّابࣰا"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَیۡءٍ أَحۡصَیۡنَـٰهُ كِتَـٰبࣰا"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوقُوا۟ فَلَن نَّزِیدَكُمۡ إِلَّا عَذَابًا"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "إِنَّ لِلۡمُتَّقِینَ مَفَازًا"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَاۤىِٕقَ وَأَعۡنَـٰبࣰا"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَكَوَاعِبَ أَتۡرَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَكَأۡسࣰا دِهَاقࣰا"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَّا یَسۡمَعُونَ فِیهَا لَغۡوࣰا وَلَا كِذَّ ٰ⁠بࣰا"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَاۤءࣰ مِّن رَّبِّكَ عَطَاۤءً حِسَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبِّ ٱلسَّمَـٰوَ ٰ⁠تِ وَٱلۡأَرۡضِ وَمَا بَیۡنَهُمَا ٱلرَّحۡمَـٰنِۖ لَا یَمۡلِكُونَ مِنۡهُ خِطَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "یَوۡمَ یَقُومُ ٱلرُّوحُ وَٱلۡمَلَـٰۤىِٕكَةُ صَفࣰّاۖ لَّا یَتَكَلَّمُونَ إِلَّا مَنۡ أَذِنَ لَهُ ٱلرَّحۡمَـٰنُ وَقَالَ صَوَابࣰا"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذَ ٰ⁠لِكَ ٱلۡیَوۡمُ ٱلۡحَقُّۖ فَمَن شَاۤءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔابًا"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "إِنَّاۤ أَنذَرۡنَـٰكُمۡ عَذَابࣰا قَرِیبࣰا یَوۡمَ یَنظُرُ ٱلۡمَرۡءُ مَا قَدَّمَتۡ یَدَاهُ وَیَقُولُ ٱلۡكَافِرُ یَـٰلَیۡتَنِی كُنتُ تُرَ ٰ⁠بَۢا"
        }
    ]
}