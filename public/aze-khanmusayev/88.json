{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Aləmi Bürüyənin xəbəri sənə gəlib çatdımı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün neçə-neçə üzlər zə­lil olub yerə dikiləcək"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "üzülüb əldən düşəcək"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "çox qızmar oda girəcək"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "qaynar çeşmədən içirdi­lə­cək"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara daridən başqa bir yemək verilməyəcək"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O onları nə doydurar, nə də aclıq­dan xilas edər"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün neçəsinin üzündə fərəh gö­rü­nəcək"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "dünyadakı səylərindən məmnun qa­lacaq"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "uca Cənnətdə olacaq"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "orada faydasız söz eşit­məyə­cək­"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada axar çeşmələr var­dır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada hündür taxtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "düzülmüş piyalələr"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "yan-yana qoyulmuş yas­tıqlar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "və döşəmələrə sərilmiş xal­çalar var"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Məgər onlar dəvənin ne­cə ya­ra­dıldığını görmürlər"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göyün necə yüksəl­diyi­ni gör­mür­lər"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların necə sancıldı­ğı­nı gör­mürlər"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin necə döşədildiyini gör­mürlər"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Onlara nəsihət ver! Sən yalnız nəsihətçisən"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sən onların üstündə hökm­dar deyilsən"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Lakin üz döndərib küfr edəni"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ən şiddətli əzabla cəza­lan­dırar"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şübhəsiz ki, onların dö­nüşü Bi­zədir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları sorğu-suala çəkmək də Bizə aiddir"
        }
    ]
}