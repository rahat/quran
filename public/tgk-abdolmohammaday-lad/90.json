{
    "chapter": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Qasam ʙa in şahr! (Makka)"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Va tu dar in şahr halol xohī şud"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Va qasam ʙa padaru farzandoni ū"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "ki odamiro, dar rançu mehnat ʙijofaridaem"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Ojo mepindorad, ki kas ʙar ū qodir nagardad"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Megūjad: «Mole farovonro xarç kardam!»"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Ojo mepindorad, ki kase ūro nadidaast"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Ojo ʙaroi ū du caşm najofaridaem"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Va jak zaʙonu du laʙ"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Va du roh ʙa ū dalolat nakardem"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Va ū dar on guzargohi saxt qadam nanihod"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Va tu cī donī, ki guzargohi saxt cist"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Ozod kardani ʙanda ast"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "jo ta'om dodan dar rūzi qahtī"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "xosa ʙa jatime, ki xeşovand ʙoşad"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "jo ʙa miskine xoknişin (mūhtoç)"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Ba'd, az on az kasone ʙoşad, ki imon ovardaand va jakdigarro ʙa saʙr vasijat kardaandu ʙa şafqat"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Inho ahli sa'odatand"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Va kasone, ki ʙa ojoti Mo kofirand, ahli şaqovatand (ʙadʙaxtijand)"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Nasiʙi onhost otaşe, ki az har sū saraş pūşidaast"
        }
    ]
}