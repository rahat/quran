{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ojo dostoni ƣoşija ʙa tu rasidaast"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Dar on rūz vahşat dar cehraho padidor ast"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "taloşkardavu rançdida"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "dar otaşi sūzon daraftand"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "az on caşmai ʙisjor garm oʙaşon dihand"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "ta'ome ƣajri xor nadorand"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "ki na farʙeh mekunad va na daf'i gurusnagī"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Va dar on rūz cehrahoe toza ʙoşand"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "az kori xud xuşnud"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "dar ʙihişte olimaqom"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "ki dar on suxani ʙehuda naşnavī"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "va dar on caşmasorho ravon ʙoşad"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "va taxthoe ʙaland zada"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "va kūzahoe nihoda"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "va ʙolişhoe dar kanori ham cida"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "va farşhoe pahn karda"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Ojo ʙa şutur namenigarand, ki cī guna ofarida şuda"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Va ʙa osmon, ki cī guna ʙardoştaşuda"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Va ʙa kūhho, ki cī guna ʙaland kaşidaşuda"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Va ʙa zamin, ki cī son gusturda şuda"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Pas pand deh ki tu panddihandae hastī"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Tu ʙar onon farmonravo nestī"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Magar on kas kī rūjgardon şud va kofir şud"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Pas Xudojaş ʙa azoʙi ʙuzurgtar azoʙ mekunad"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Alʙatta ʙozgaştaşon ʙa sūi Most"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sipas hisoʙaşon ʙo Most"
        }
    ]
}