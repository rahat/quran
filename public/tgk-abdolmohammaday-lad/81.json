{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Cun xurşed ʙefurūƣ (xira) şavad"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "va cun sitoragon furū rezand"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "va cun kūhho az çoi xud ʙeço ʙişavand"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "va cun şuturoni homila ʙa holi xud guzoşta şavand"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "va cun çonvaroni vahşī çam' ovarda şavand"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "va cun darjoho otaş girand"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "va cun rūhho ʙo tanho jakçoja gardgand"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "va cun az duxtari zinda ʙa gūr şuda pursida şavad, ki"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "ʙa cī gunohe kuşta şudaast"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "va cun sahifaho ʙoz şavand"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "va cun osmon az çoi xud kanda şavad"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "va cun çahannam afrūxta gardad"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "va cun ʙihiştro peş ovarand"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "har kas ʙidonad, ki cī hozir ovardaast"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Savgand ʙa sitoragoni ʙozgardanda"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "sajrkunandai ƣojʙşavanda"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "va savgand ʙa şaʙ, cun torik şavad"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "va savgand ʙa suʙh cun ʙidamad"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "ki in suxani rasule ʙuzurgvor (Çiʙril (a)) ast"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "nerūmand, dar nazdi Xudovandi arş sohiʙoʙrū"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "on ço (dar nazdi Xudo) farmonravoi ʙovarinokast"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Va hamsūhʙati şumo devona nest"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Alʙatta Ūro (Çiʙrilro) dar ufuqi ravşan didaast"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Va on ciro az ƣajʙ ʙa ū gūjand, dareƣ namedorad"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Va on suxan suxani şajtoni raçim nest"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Pas ʙa kuço meraved"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "In kitoʙ pandest ʙaroi çahonijon"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "ʙaroi har kas az şumo, ki ʙixohad ʙa rohi rost aftad"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Va şumo namexohed, ƣajri on ciro, ki Parvardigori çahonijon xosta ʙoşad"
        }
    ]
}