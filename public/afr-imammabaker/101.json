{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Die ramp"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Wat is die ramp"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "En wat weet u van die vreeslikheid van die ramp"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Die Dag waarop mense soos motte verstrooi sal word"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "en die berge soos gekamde wol sal lyk"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Dan, wat hom betref wie se goeie dade swaar sal weeg"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "hy sal ’n aangename lewe geniet"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Maar hy wie se goeie dade lig weeg"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "die bodemlose put sal sy moeder wees"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "En weet u wat die bodemlose put is"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Dit is ’n Brandende Vuur"
        }
    ]
}