{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Ki onun olusunu yalanlayacak hicbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alcaltıcı, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar parcalandıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagılıp toz duman haline geldigi"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagdakiler, ne mutlu o sagdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdırlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) onde olanlar, (ecirde de) ondedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste bunlar, (Allah´a) en yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onların) cogu onceki ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Cevherlerle islenmis tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların uzerlerinde karsılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Cevrelerinde, (hizmet icin) olumsuz gencler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Main cesmesinden doldurulmus testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu saraptan ne basları agrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "(Onlara) begendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir soz ve gunaha sokan bir laf isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Soylenen, yalnızca \"selam, selam\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagdakiler, ne mutlu o sagdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Duzgun kiraz agacı"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyveleri salkım salkım dizili muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Sayısız meyveler icindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve kabartılmıs dosekler ustundedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gercekten biz hurileri apayrı bicimde yeni yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine duskun ve yasıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Butun bunlar sagdakiler icindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların bircogu onceki ummetlerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bircogu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler; ne yazık o soldakilere"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Iclerine isleyen bir ates ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kapkara dumandan bir golge altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serin ve hos olmayan"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar bundan once varlık icinde sefahete dalmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahı islemekte direnir dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardı ki: Biz oldukten, toprak ve kemik yıgını haline geldikten sonra, biz mi bir daha diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Onceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Hem oncekiler hem de sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir gunun belli vaktinde mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz ey sapıklar, yalancılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir agactan, zakkum agacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı ondan dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune de kaynar sudan iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamıs develerin suya saldırısı gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Iste ceza gununde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık. Tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Soyleyin oyleyse, (rahimlere) doktugunuz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda olumu takdir eden biziz. Ve biz, onune gecilebileceklerden degiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Boylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediginiz bir alemde tekrar var edelim diye (olumu takdir ettik)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratılısı bildiniz. Dusunup ibret almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Simdi bana, ektiginizi haber verin"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu kuru bir cop yapardık da sasar kalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Dogrusu borc altına girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha dogrusu, biz yoksul kaldık\" (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ya ictiginiz suya ne dersiniz"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Sukretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Soyleyin simdi bana, tutusturmakta oldugunuz atesi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yarattınız, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve colden gelip gecenlerin istifadesi icin yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse ulu Rabbinin adını tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Hayır! Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Bilirseniz, gercekten bu, buyuk bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Suphesiz bu, degerli bir Kur´an´dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Korunmus bir kitaptır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenenler dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "O, alemlerin Rabbinden indirilmistir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Simdi siz, bu sozu mu kucumsuyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Allah´ın verdigi rızka karsı sukru, onu yalanlamakla mı yerine getiriyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele can bogaza dayandıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakar durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "(O anda) biz ona sizden daha yakınız, ama goremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki ceza gormeyecekmissiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu (canı) geri cevirsenize, sayet iddianızda dogru iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Fakat (olen kisi Allah´a) yakın olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, guzel rızık ve Naim cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eger o sagdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sagdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Ama yalanlayıcı sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Iste ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) cehenneme atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Suphesiz ki bu, kesin gercektir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Oyleyse ulu Rabbinin adını tenzih ile an"
        }
    ]
}