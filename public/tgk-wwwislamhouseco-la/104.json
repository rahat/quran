{
    "chapter": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Voj ʙar har ƣajʙatkunanda [va] ajʙcue"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "[Hamon] Kase, ki moli farovone gird ovard va onro sumoris kard"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Gumon mekunad, ki molas uro covidona mesozad"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hargiz cunin nest [ki u gumon mekunad]; hatman, dar otasi darhamkuʙanda andoxta xohad sud"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Va [ej Pajomʙar] tu ci medoni, ki otasi darhamkuʙanda cist"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Otasi ʙarafruxtai ilohi ast"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "[Otase] Ki ʙar dilho cira megardad [va mesuzonad]"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Be gumon, on [otas] ʙar onon furuʙasta [va az har su muhosirason karda] ast"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "[Afruxta] Dar sutunhoi ʙaland ast"
        }
    ]
}