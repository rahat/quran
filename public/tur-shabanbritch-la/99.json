{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, siddetle sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insan: Buna ne oluyor? dediginde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, amelleri kendilerine gosterilmek icin boluk boluk donerler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre agırlıgınca iyilik yapmıssa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre agırlıgınca kotuluk yapmıssa onu gorur"
        }
    ]
}