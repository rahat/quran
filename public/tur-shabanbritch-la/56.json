{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Ki onun kopmasını yalanlayacak hicbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alcaltıcı, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer sarsıldıkca"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca oldugu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz toprak halinde dagılıp savruldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagdakiler, nedir o sagdakiler"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, nedir o soldakiler"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) onde olanlar, (derece olarak da) ondedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlar, yakınlastırılmıs olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet Cennetlerindedir onlar"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Suslenmis tahtlar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsı karsıya oturup, arkalarına yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında olumsuz genc hizmetciler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagından (doldurulmus) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bundan ne baslarını bir agrı tutar, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendiklerinden meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki sedef icindeki inciler"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "yaptıkları amellere karsılık (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos ve gunaha sokacak bir soz isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Soylenen, yalnızca \"Selam, selam\"dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagdakiler, nedir o sagdakiler"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz cehri agaclarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmıs golgede"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan sularda"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Meyveler icinde"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuksek dosekler icindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o kadınları yeni bir yaratılısla yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler seklinde yarattık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine duskun ve yasıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag taraftakiler icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Cogu da sonrakilerden…"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler, nedir o soldakiler"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Iclerine isleyen atesin ruzgarı ve kaynar su icindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman golgesi icinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serinlik yok, kerem yok"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar, bundan once (haramlar icinde) sımarmıs kimselerdi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunah uzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz olup, toprak ve kemik olduktan sonra tekrar mı dirilecegiz? diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha onceki atalarımızda mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Oncekiler de sonrakiler de…"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir gunun, belli bir vaktinde bir araya getirileceksiniz"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz ey sapıklar, yalanlayanlar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette yiyeceksiniz zakkum agacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune iceceksiniz kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamıs develerin icisi gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Hesap gunu onların ziyafeti budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık! Gerekmez mi (tekrardan yaratılısı) tasdik etmeniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Soyleyin oyleyse, (rahimlere) doktugunuz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda olumu takdir eden biziz! Bizler aciz de degiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi benzerlerinizle degistirmek ve sizi bilmediginiz bir sekilde yeniden yaratmak hususunda…"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Ilk yaratılısınızı biliyorsunuz, dusunmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginiz seyleri gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onları bitiren siz misiniz yoksa biz mi bitiriyoruz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek, onu cor cop yaparız da sasırıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Muhakkak biz cok ziyandayız"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Dogrusu biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ictiginiz suyu gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Isteseydik onu tuzlu bir su yapardık; sukretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Tutusturdugunuz atesi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yarattınız yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve gelip gecen yolcuların istifadesi icin yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde yuce Rabbinin adını tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Suphesiz bu, buyuk bir yemindir, eger bilirseniz"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Suphesiz bu, degerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli/korunmus bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenenler dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbinden indirilmistir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Siz bu sozu mu hor goruyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete sukur ediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele bir (ruh) bogaza gelmis olmasın"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Siz, o zaman bakıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz, ona sizden daha yakınız, ama goremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki (tekrardan dirilip) ceza gormeyecekmissiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu (ruhu) geri ceviriniz. Dogru soyleyenlerden iseniz…"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eger o (olen kisi), yakın kılınanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, guzel rızık ve Naim Cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eger o, sagdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sagdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eger o, yalanlayanlardan ve sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Kaynar suda bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılıs"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Bu, kesin olan hakkın ta kendisidir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Oyleyse yuce Rabbinin adını tesbih et"
        }
    ]
}