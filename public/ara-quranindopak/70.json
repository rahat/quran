{
    "chapter": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَاَلَ سَآئِلٌۭ بِعَذَابٍ وَّاقِعٍۙ‏"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكٰفِرِيۡنَ لَيۡسَ لَهٗ دَافِعٌۙ‏"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ اللّٰهِ ذِي الۡمَعَارِجِؕ‏"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ الۡمَلٰٓئِكَةُ وَالرُّوۡحُ اِلَيۡهِ فِيۡ يَوۡمٍ كَانَ مِقۡدَارُهٗ خَمۡسِيۡنَ اَلۡفَ سَنَةٍۚ‏"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَاصۡبِرۡ صَبۡرًا جَمِيۡلًا"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "اِنَّهُمۡ يَرَوۡنَهٗ بَعِيۡدًاۙ‏"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَّنَرٰىهُ قَرِيۡبًاؕ‏"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "يَوۡمَ تَكُوۡنُ السَّمَآءُ كَالۡمُهۡلِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُوۡنُ الۡجِبَالُ كَالۡعِهۡنِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيۡمٌ حَمِيۡمًاۚۙ‏"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يُّبَصَّرُوۡنَهُمۡؕ يَوَدُّ الۡمُجۡرِمُ لَوۡ يَفۡتَدِيۡ مِنۡ عَذَابِ يَوۡمِئِذٍۭ بِبَنِيۡهِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَاحِبَتِهٖ وَاَخِيۡهِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِيۡلَتِهِ الَّتِيۡ تُـٔۡوِيۡهِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَنۡ فِي الۡاَرۡضِ جَمِيۡعًاۙ ثُمَّ يُنۡجِيۡهِۙ‏"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّاؕ اِنَّهَا لَظٰيۙ‏"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةً لِّلشَّوٰيۚۖ‏"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُوۡا مَنۡ اَدۡبَرَ وَتَوَلّٰيۙ‏"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَاَوۡعٰي"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "اِنَّ الۡاِنۡسَانَ خُلِقَ هَلُوۡعًاۙ‏"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "اِذَا مَسَّهُ الشَّرُّ جَزُوۡعًاۙ‏"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "وَّاِذَا مَسَّهُ الۡخَيۡرُ مَنُوۡعًاۙ‏"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "اِلَّا الۡمُصَلِّيۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "الَّذِيۡنَ هُمۡ عَلٰي صَلَاتِهِمۡ دَآئِمُوۡنَۙࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "وَالَّذِيۡنَ فِيۡ٘ اَمۡوَالِهِمۡ حَقٌّ مَّعۡلُوۡمٌۙࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "لِّلسَّآئِلِ وَالۡمَحۡرُوۡمِۙࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "وَالَّذِيۡنَ يُصَدِّقُوۡنَ بِيَوۡمِ الدِّيۡنِۙࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "وَالَّذِيۡنَ هُمۡ مِّنۡ عَذَابِ رَبِّهِمۡ مُّشۡفِقُوۡنَۚ‏"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "اِنَّ عَذَابَ رَبِّهِمۡ غَيۡرُ مَاۡمُوۡنٍࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "وَالَّذِيۡنَ هُمۡ لِفُرُوۡجِهِمۡ حٰفِظُوۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "اِلَّا عَلٰ٘ي اَزۡوَاجِهِمۡ اَوۡ مَا مَلَكَتۡ اَيۡمَانُهُمۡ فَاِنَّهُمۡ غَيۡرُ مَلُوۡمِيۡنَۚ‏"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "فَمَنِ ابۡتَغٰي وَرَآءَ ذٰلِكَ فَاُولٰٓئِكَ هُمُ الۡعٰدُوۡنَۚ‏"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "وَالَّذِيۡنَ هُمۡ لِاَمٰنٰتِهِمۡ وَعَهۡدِهِمۡ رٰعُوۡنَࣕۙ‏"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "وَالَّذِيۡنَ هُمۡ بِشَهٰدٰتِهِمۡ قَآئِمُوۡنَۙࣕ‏"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "وَالَّذِيۡنَ هُمۡ عَلٰي صَلَاتِهِمۡ يُحَافِظُوۡنَؕ‏"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "اُولٰٓئِكَ فِيۡ جَنّٰتٍ مُّكۡرَمُوۡنَࣖؕ‏"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "فَمَالِ الَّذِيۡنَ كَفَرُوۡا قِبَلَكَ مُهۡطِعِيۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "عَنِ الۡيَمِيۡنِ وَعَنِ الشِّمَالِ عِزِيۡنَ"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "اَيَطۡمَعُ كُلُّ امۡرِئٍ مِّنۡهُمۡ اَنۡ يُّدۡخَلَ جَنَّةَ نَعِيۡمٍۙ‏"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "كَلَّاؕ اِنَّا خَلَقۡنٰهُمۡ مِّمَّا يَعۡلَمُوۡنَ"
        },
        {
            "chapter": 70,
            "verse": 40,
            "text": "فَلَا٘ اُقۡسِمُ بِرَبِّ الۡمَشٰرِقِ وَالۡمَغٰرِبِ اِنَّا لَقٰدِرُوۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 41,
            "text": "عَلٰ٘ي اَنۡ نُّبَدِّلَ خَيۡرًا مِّنۡهُمۡۙ وَمَا نَحۡنُ بِمَسۡبُوۡقِيۡنَ"
        },
        {
            "chapter": 70,
            "verse": 42,
            "text": "فَذَرۡهُمۡ يَخُوۡضُوۡا وَيَلۡعَبُوۡا حَتّٰي يُلٰقُوۡا يَوۡمَهُمُ الَّذِيۡ يُوۡعَدُوۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 43,
            "text": "يَوۡمَ يَخۡرُجُوۡنَ مِنَ الۡاَجۡدَاثِ سِرَاعًا كَاَنَّهُمۡ اِلٰي نُصُبٍ يُّوۡفِضُوۡنَۙ‏"
        },
        {
            "chapter": 70,
            "verse": 44,
            "text": "خَاشِعَةً اَبۡصَارُهُمۡ تَرۡهَقُهُمۡ ذِلَّةٌؕ ذٰلِكَ الۡيَوۡمُ الَّذِيۡ كَانُوۡا يُوۡعَدُوۡنَࣖ‏"
        }
    ]
}