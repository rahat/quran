{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "iẕe-ssemâü-nfeṭarat"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "veiẕe-lkevâkibü-nteŝerat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "veiẕe-lbiḥâru füccirat"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "veiẕe-lḳubûru bü`ŝirat"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "alimet nefsüm mâ ḳaddemet veeḫḫarat"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "yâ eyyühe-l'insânü mâ garrake birabbike-lkerîm"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "elleẕî ḫaleḳake fesevvâke fe`adelek"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "fî eyyi ṣûratim mâ şâe rakkebek"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "kellâ bel tükeẕẕibûne biddîn"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "veinne `aleyküm leḥâfiżîn"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "kirâmen kâtibîn"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "ya`lemûne mâ tef`alûn"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "inne-l'ebrâra lefî ne`îm"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "veinne-lfüccâra lefî ceḥîm"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "yaṣlevnehâ yevme-ddîn"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "vemâ hüm `anhâ bigâibîn"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "vemâ edrâke mâ yevmü-ddîn"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ŝümme mâ edrâke mâ yevmü-ddîn"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "yevme lâ temlikü nefsül linefsin şey'â. vel'emru yevmeiẕil lillâh"
        }
    ]
}