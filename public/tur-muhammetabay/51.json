{
    "chapter": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "veẕẕâriyâti ẕervâ"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "felḥâmilâti viḳrâ"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "felcâriyâti yüsrâ"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "felmüḳassimâti emrâ"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "innemâ tû`adûne leṣâdiḳ"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "veinne-ddîne levâḳi"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "vessemâi ẕâti-lḥubük"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "inneküm lefî ḳavlim muḫtelif"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "yü'fekü `anhü men üfik"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "ḳutile-lḫarrâṣûn"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "elleẕîne hüm fî gamratin sâhûn"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "yes'elûne eyyâne yevmü-ddîn"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "yevme hüm `ale-nnâri yüftenûn"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ẕûḳû fitneteküm. hâẕe-lleẕî küntüm bihî testa`cilûn"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "inne-lmütteḳîne fî cennâtiv ve`uyûn"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "âḫiẕîne mâ âtâhüm rabbühüm. innehüm kânû ḳable ẕâlike muḥsinîn"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "kânû ḳalîlem mine-lleyli mâ yehce`ûn"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "vebil'esḥâri hüm yestagfirûn"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "vefî emvâlihim ḥaḳḳul lissâili velmaḥrûm"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "vefi-l'arḍi âyâtül lilmûḳinîn"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "vefî enfüsiküm. efelâ tübṣirûn"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "vefi-ssemâi rizḳuküm vemâ tû`adûn"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "feverabbi-ssemâi vel'arḍi innehû leḥaḳḳum miŝle mâ enneküm tenṭiḳûn"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "hel etâke ḥadîŝü ḍayfi ibrâhîme-lmükramîn"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "iẕ deḫalû `aleyhi feḳâlû selâmâ. ḳâle selâm. ḳavmüm münkerûn"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "ferâga ilâ ehlihî fecâe bi`iclin semîn"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "feḳarrabehû ileyhim ḳâle elâ te'külûn"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "feevcese minhüm ḫîfeh. ḳâlû lâ teḫaf. vebeşşerûhü bigulâmin `alîm"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "feaḳbeleti-mraetühû fî ṣarratin feṣakket vechehâ veḳâlet `acûzün `aḳîm"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "ḳâlû keẕâliki ḳâle rabbük. innehû hüve-lḥakîmü-l`alîm"
        },
        {
            "chapter": 51,
            "verse": 31,
            "text": "ḳâle femâ ḫaṭbüküm eyyühe-lmürselûn"
        },
        {
            "chapter": 51,
            "verse": 32,
            "text": "ḳâlû innâ ürsilnâ ilâ ḳavmim mücrimîn"
        },
        {
            "chapter": 51,
            "verse": 33,
            "text": "linürsile `aleyhim ḥicâratem min ṭîn"
        },
        {
            "chapter": 51,
            "verse": 34,
            "text": "müsevvemeten `inde rabbike lilmüsrifîn"
        },
        {
            "chapter": 51,
            "verse": 35,
            "text": "feaḫracnâ men kâne fîhâ mine-lmü'minîn"
        },
        {
            "chapter": 51,
            "verse": 36,
            "text": "femâ vecednâ fîhâ gayra beytim mine-lmüslimîn"
        },
        {
            "chapter": 51,
            "verse": 37,
            "text": "veteraknâ fîhâ âyetel lilleẕîne yeḫâfûne-l`aẕâbe-l'elîm"
        },
        {
            "chapter": 51,
            "verse": 38,
            "text": "vefî mûsâ iẕ erselnâhü ilâ fir`avne bisülṭânim mübîn"
        },
        {
            "chapter": 51,
            "verse": 39,
            "text": "fetevellâ biruknihî veḳâle sâḥirun ev mecnûn"
        },
        {
            "chapter": 51,
            "verse": 40,
            "text": "feeḫaẕnâhü vecünûdehû fenebeẕnâhüm fi-lyemmi vehüve mülîm"
        },
        {
            "chapter": 51,
            "verse": 41,
            "text": "vefî `âdin iẕ erselnâ `aleyhimü-rrîḥa-l`aḳîm"
        },
        {
            "chapter": 51,
            "verse": 42,
            "text": "mâ teẕeru min şey'in etet `aleyhi illâ ce`alethü kelramîm"
        },
        {
            "chapter": 51,
            "verse": 43,
            "text": "vefî ŝemûde iẕ ḳîle lehüm temette`û ḥattâ ḥîn"
        },
        {
            "chapter": 51,
            "verse": 44,
            "text": "fe`atev `an emri rabbihim feeḫaẕethümu-ṣṣâ`iḳatü vehüm yenżurûn"
        },
        {
            "chapter": 51,
            "verse": 45,
            "text": "feme-steṭâ`û min ḳiyâmiv vemâ kânû münteṣirîn"
        },
        {
            "chapter": 51,
            "verse": 46,
            "text": "veḳavme nûḥim min ḳabl. innehüm kânû ḳavmen fâsiḳîn"
        },
        {
            "chapter": 51,
            "verse": 47,
            "text": "vessemâe beneynâhâ bieydiv veinnâ lemûsi`ûn"
        },
        {
            "chapter": 51,
            "verse": 48,
            "text": "vel'arḍa feraşnâhâ feni`me-lmâhidûn"
        },
        {
            "chapter": 51,
            "verse": 49,
            "text": "vemin külli şey'in ḫalaḳnâ zevceyni le`alleküm teẕekkerûn"
        },
        {
            "chapter": 51,
            "verse": 50,
            "text": "fefirrû ile-llâh. innî leküm minhü neẕîrum mübîn"
        },
        {
            "chapter": 51,
            "verse": 51,
            "text": "velâ tec`alû me`a-llâhi ilâhen âḫar. innî leküm minhü neẕîrum mübîn"
        },
        {
            "chapter": 51,
            "verse": 52,
            "text": "keẕâlike mâ ete-lleẕîne min ḳablihim mir rasûlin illâ ḳâlû sâḥirun ev mecnûn"
        },
        {
            "chapter": 51,
            "verse": 53,
            "text": "etevâṣav bih. bel hüm ḳavmün ṭâgûn"
        },
        {
            "chapter": 51,
            "verse": 54,
            "text": "fetevelle `anhüm femâ ente bimelûm"
        },
        {
            "chapter": 51,
            "verse": 55,
            "text": "veẕekkir feinne-ẕẕikrâ tenfe`u-lmü'minîn"
        },
        {
            "chapter": 51,
            "verse": 56,
            "text": "vemâ ḫalaḳtü-lcinne vel'inse illâ liya`büdûn"
        },
        {
            "chapter": 51,
            "verse": 57,
            "text": "mâ ürîdü minhüm mir rizḳiv vemâ ürîdü ey yuṭ`imûn"
        },
        {
            "chapter": 51,
            "verse": 58,
            "text": "inne-llâhe hüve-rrazzâḳu ẕü-lḳuvveti-lmetîn"
        },
        {
            "chapter": 51,
            "verse": 59,
            "text": "feinne lilleẕîne żalemû ẕenûbem miŝle ẕenûbi aṣḥâbihim felâ yesta`cilûn"
        },
        {
            "chapter": 51,
            "verse": 60,
            "text": "feveylül lilleẕîne keferû miy yevmihimü-lleẕî yû`adûn"
        }
    ]
}