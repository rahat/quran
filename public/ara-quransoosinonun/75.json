{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "لَا أُقۡسِم بِيَوۡمِ اِ۬لۡقِيَٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "وَلَا أُقۡسِم بِالنَّفۡسِ اِ۬للَّوَّامَةِ"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "أَيَحۡسِبُ اُ۬لۡإِنسَٰنُ أَلَّن نَّجۡمَع عِّظَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بَلَىٰ قَٰدِرِينَ عَلَىٰ أَن نُّسَوِّيَ بَنَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بَلۡ يُرِيدُ اُ۬لۡإِنسَٰنُ لِيَفۡجُرَ أَمَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "يَسۡـَٔلُ أَيَّانَ يَوۡمُ اُ۬لۡقِيَٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "فَإِذَا بَرِقَ اَ۬لۡبَصَرُ"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "وَخَسَفَ اَ۬لۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "وَجُمِعَ اَ۬لشَّمۡسُ وَاَلۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "يَقُولُ اُ۬لۡإِنسَٰنُ يَوۡمَئِذٍ أَيۡنَ اَ۬لۡمَفَرُّ"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "كَلَّا لَا وَزَرَ"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ اِ۬لۡمُسۡتَقَرُّ"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "يُنَبَّؤُاْ اُ۬لۡإِنسَٰنُ يَوۡمَئِذِۢ بِمَا قَدَّمَ وَأَخَّرَ"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بَلِ اِ۬لۡإِنسَٰنُ عَلَىٰ نَفۡسِهِۦ بَصِيرَةٞ"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "وَلَوۡ أَلۡقَىٰ مَعَاذِيرَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "لَا تُحَرِّكۡ بِهِۦ لِسَانَكَ لِتَعۡجَلَ بِهِۦ"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "إِنَّ عَلَيۡنَا جَمۡعَهُۥ وَقُرۡءَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "فَإِذَا قَرَانَٰهُ فَاَتَّبِعۡ قُرۡءَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "ثُمَّ إِنَّ عَلَيۡنَا بَيَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "كَلَّا بَلۡ يُحِبُّونَ اَ۬لۡعَاجِلَةَ"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "وَيَذَرُونَ اَ۬لۡأٓخِرَةَ"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "وُجُوهٞ يَوۡمَئِذٖ نَّاضِرَةٌ"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "إِلَىٰ رَبِّهَا نَاظِرَةٞ"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "وَوُجُوهٞ يَوۡمَئِذِۢ بَاسِرَةٞ"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "تَظُنُّ أَن يُفۡعَلَ بِهَا فَاقِرَةٞ"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "كَلَّا إِذَا بَلَغَتِ اِ۬لتَّرَاقِيَ"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "وَقِيلَ مَن رَّاقٖ"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "وَظَنَّ أَنَّهُ اُ۬لۡفِرَاقُ"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "وَاَلۡتَفَّتِ اِ۬لسَّاقُ بِالسَّاقِ"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ اِ۬لۡمَسَاقُ"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "فَلَا صَدَّقَ وَلَا صَلّۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "وَلَٰكِن كَذَّبَ وَتَوَلّۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "ثُمَّ ذَهَبَ إِلَىٰ أَهۡلِهِۦ يَتَمَطّۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "أَوۡلَىٰ لَكَ فَأَوۡلۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "ثُمَّ أَوۡلَىٰ لَكَ فَأَوۡلۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "أَيَحۡسِبُ اُ۬لۡإِنسَٰنُ أَن يُتۡرَكَ سُدًى"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "أَلَمۡ يَكُ نُطۡفَةٗ مِّن مَّنِيّٖ تُمۡنۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "ثُمَّ كَانَ عَلَقَةٗ فَخَلَقَ فَسَوّۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "فَجَعَلَ مِنۡهُ اُ۬لزَّوۡجَيۡنِ اِ۬لذَّكَرَ وَاَلۡأُنثۭيٰ"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "أَلَيۡسَ ذَٰلِكَ بِقَٰدِرٍ عَلَىٰ أَن يُحۡـِۧيَ اَ۬لۡمَوۡتۭيٰ"
        }
    ]
