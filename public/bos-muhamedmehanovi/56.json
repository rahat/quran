{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kada se Neizbježni događaj zbije"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "događanju njegovom nema poništenja"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "neke će poniziti, a neke uzvisiti"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Kad se Zemlja jako potrese"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "i brda se u komadiće zdrobe"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "i postanu prašina razasuta"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "vas će tri vrste biti"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "oni zdesna - šta će biti s onim zdesna"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "i oni slijeva - šta će biti s onim slijeva"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "i oni koji prednjače - oni će prednjačiti"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "To su oni bliski"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "u džennetskim baščama naslada bit će"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bit će ih mnogo iz prvih"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "a malo iz zadnjih"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "na divanima izvezenim"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "jedni prema drugima na njima će naslonjeni biti"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "služit će ih vječno mladi dječaci"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "sa čašama i ibricima, i peharom punim pića iz izvora tekućeg"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "od koga ih glava neće boljeti i zbog koga neće pamet izgubiti"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "i voćem koje će sami birati"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "i mesom ptičijim kakvo budu željeli"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "U njima će biti i hurije očiju krupnih"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "slične biseru u školjkama skrivenom"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "kao nagrada za ono što su činili"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "U njima neće slušati prazne besjede, ni govor grešni"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "nego samo riječi: \"Selam, selam"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "A oni s desne strane - šta će biti s onim s desne strane"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Bit će među lotosovim drvećem bez bodlji"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "i među drvećem akacije plodovima nanizanim"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "i u hladovini prostranoj"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "pored vode tekuće"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "i usred voća svakovrsnog"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "koje će uvijek imati i koje neće zabranjeno biti"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "i na posteljama uzdignutim"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Stvaranje njihovo, zaista, ćemo obnoviti"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "i djevicama ih učiniti"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "te onim koje se umiljavaju muževima svojim i godina istih"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "za one s desne strane"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bit će ih mnogo iz prvih"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "a mnogo iz kasnijih"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "A oni s lijeve strane - šta je s onima s lijeve strane"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Oni će biti u vrelom dašku vatre i vodi ključaloj"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "i u sjeni dima mrkog"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "u kojoj neće biti svježine ni bilo kakve ugodnosti"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Oni su prije toga raskošnim životom živjeli"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "i uporno teške grijehe činili"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "i govorili: \"Zar kad umremo i zemlja i kosti postanemo - zar ćemo zbilja biti oživljeni"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "zar i drevni naši preci"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "Reci: \"I drevni i kasniji"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "u određeno vrijeme, i u Dan određeni bit će sakupljeni"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "i tada ćete vi, o zabludjeli, koji poričete oživljavanje"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "sigurno s drveta zekkum jesti"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "i njime ćete trbuhe puniti"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "pa zatim na to vodu ključalu piti"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "poput kamila koje ne mogu žeđ ugasiti"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "to će im na Dan polaganja računa ugošćenje biti"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Mi smo vas stvorili - pa zašto ne povjerujete"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Kažite vi Meni: da li sjemenu koje ubacujete"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "vi oblik dajete ili Mi to činimo"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Mi određujemo kad će ko od vas umrijeti, i niko Nas ne može spriječiti"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "da likove vaše izmijenimo i da vas iznova u likovima koje vi ne poznajete stvorimo"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Poznato vam je kako ste prvi put stvoreni, pa zašto se ne urazumite"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Kažite vi Meni: šta biva s onim što posijete"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Da li mu vi dajete snagu da niče, ili to Mi činimo"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Ako hoćemo, možemo ga u suho rastinje pretvoriti, pa biste se snebivali"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Mi smo, doista, oštećeni"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "čak smo svega lišeni"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Kažite vi Meni: vodu koju pijete"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "da li je vi ili Mi iz oblaka spuštamo"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Ako želimo, možemo je slanom učiniti - pa zašto niste zahvalni"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Kažite vi Meni: vatru koju palite"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "da li drvo za nju Mi stvaramo ili vi"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Mi činimo da ona podsjeća i da bude korisna putnicima kada konače"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "zato slavi i veličaj ime Gospodara svoga Veličanstvenog"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "I kunem se mjestima postepenog spuštanja Kur'ana"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "a to je, da znate, zakletva velika"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "On je, zaista, Kur'an plemeniti"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "u Knjizi brižljivo čuvanoj"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Dodirnuti ga smiju samo oni koji su čisti"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "On je objava od Gospodara svjetova"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "pa kako ovaj govor omalovažavate"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "i umjesto zahvalnosti što vam je opskrba darovana, vi u njega ne vjerujete"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "A zašto vi, kad duša do guše dopre"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "i kad vi budete tada gledali"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "a Mi smo mu bliži od vas, ali vi ne vidite"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "zašto je onda, ako račun nećete polagati"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "ne povratite, ako istinu govorite"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "I ako bude jedan od onih koji su Allahu bliski"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "udobnost i opskrba lijepa i džennetske blagodati pripast će njemu"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "A ako bude jedan od onih koji su s desne strane"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "pa, selam tebi od onih s desne sretne"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "A ako bude jedan od onih koji su poricali i u zabludi ostali"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "pa, ključalom vodom bit će ugošćen"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "i u Ognju pržen"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Sama je istina, zbilja, sve ovo"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Pa, slavi i veličaj ime Gospodara svoga Veličanstvenog"
        }
    ]
}