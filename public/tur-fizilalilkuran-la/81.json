{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes duruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar kararıp dagıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar sokulup dagıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebeliginin onuncu ayındaki develer kendi haline bırakıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Yabani hayvanlar bir araya toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler ciftlestigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve soruldugu zaman o diri diri topraga gomulen kıza"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suctan oturu gomuldu? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Siciller acılıp yayıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gokkubbe yıkıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıstırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirdigini ogrenecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yemin ederim geri kalıp gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp giderken ısık verenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Soluk almaya baslayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Suphesiz o serefli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Kuvvet sahibidir. Arsın sahibi Allah katında yucedir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada kendisine itaat edilir, guvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasımız deli degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Suphesiz (Muhammed) onu apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında tohmet altında tutulamaz"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O alemlere ogutten baska birsey degildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden duzelmeyi dileyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ancak alemlerin Rabbi Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}