{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir kan pıhtısından yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin en buyuk kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "O, insana kalemle yazmayı ogretti"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini ogretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini zengin gordugu icin"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Donus Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordun mu su men edeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gordun mu, ya o kul dogru yolda ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut kotuluklerden sakınmayı emrederse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu, ya bu adam yalanlar, yuz cevirirse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O, Allah´ın gordugunu bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır eger bundan vazgecmezse onu perceminden yakalarız"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı gunahkar perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman gitsin de taraftarlarını cagırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri cagıracagız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır ona boyun egme. Rabbine secde et ve yaklas"
        }
    ]
}