{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer dehsetle sarsıldıkca sarsıldıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yeryuzu agırlıklarını dısarı cıkardıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insanın «Buna ne oluyor» dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun yer haberlerini soyler"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahiy ile herseyi bildirmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar ayrı ayrı gruplar halinde, ilahi divana cıkarlar ki, yaptıkları isler kendilerine gosterilsin"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre agırlıgınca hayır yapmıssa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim zerre agırlıgınca ser yapmıssa onu gorur"
        }
    ]
}