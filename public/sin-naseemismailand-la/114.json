    "chapter": [
        {
            "chapter": 114,
            "verse": 1,
            "text": "(nabiye! prarthana kara) oba mese pavasanu mænava! minisunge deviyan veta ma araksava patannemi"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "(ohuma) minisungen (satyaya vu) rajuya"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "(ohuma) minisunge (næmadumata yutu satyaya vu) deviyanya"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "sængavena aparadhakarayinge vipatvalin araksa kara ganna men illa sitimi"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "ovun minisunge hrdayanhi (puhu) sækayan upadavayi"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "(evæni aparadhakarayin) jinvarungenda sitinnaha. minisungenda sitinnaha"
        }
