{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "(Habibim) gogsunu senin (faiden) icin (acıb da) genisletmedik mi? (Genisletdik)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Senden yukunu de (kaldırıb) atdık"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "(Oyle yukdu ki o) senin sırtına agır gelmis, (kemiklerini gıcırdatmıs) dı"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin namına da yukseltdik"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek, hakıykaten guclukle beraber kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Muhakkak gudukle beraber kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde bos kaldın mı hemen yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve (her isinde) ancak Rabbine sarıl"
        }
    ]
}