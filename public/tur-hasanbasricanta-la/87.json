{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin o yuce adını tesbih (ve tenzih) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki o, (her sey´i) yaratıb duzenine koyandır"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir eden, (ona gore de) yol gosterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yesil otu cıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kapkara, kupkuru bir haale getirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "(Habibim) seni okutacagız da (asla) unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allahın diledigi baska. Cunku O, asikarı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay olana muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eger ogud faide verirse (durma) ogud ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allahdan) korkacak olan ogudu kabul eder"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Peki bedbaht olan ise ondan kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en buyuk atese girecek"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra orada hem olmeyecek, hem dirilmeyecek olandır O"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Hakıykat iyi temizlenen ve Rabbinin adını zikredib de namaz kılan kimse umduguna erismisdir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Hakıykat iyi temizlenen ve Rabbinin adını zikredib de namaz kılan kimse umduguna erismisdir"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Belki siz dunya hayaatını (ahiretden) ustun tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Halbuki ahiret daha hayırlı, daha sureklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Subhesiz ki bu (nlar) evvelki sahifelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim ile Musanın sahifelerinde de vardır"
        }
    ]
}