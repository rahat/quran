{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "vanam pilantu vitumpotu"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "natcattirankal utirntu vilumpotu"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "katalkal (ponki onral onru) akarrappatum potu"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kaprukal tirakkappatum potu"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "ovvor atmavum, atu etai murpatutti (anuppi) vaittatu, etaip pinne vittuc cenratu enpatai arintu kollum"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "manitane! Kotaiyalanana cankai mikka un iraivanukku maru ceyyumpati unnai marutti vittatu etu"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "avantan unnaippataittu, unnai olunkupatutti; unnaic cevvaiyakkinan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "enta vativattil avan virumpinano (atil un uruppukalaip) poruttinan"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "ivvariruntum ninkal (kiyama) nalaip poyppikkinrirkal"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "niccayamaka, unkal mitu patu kavalarkal (niyamikkappattu) irukkinranar"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "(avarkal) kanniyam vaynta eluttalarkal"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "ninkal ceykiratai avarkal arikirarkal"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "niccayamaka nallavarkal nayim ennum cuvarkkattil irupparkal"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "innum, niccayamaka, timai ceytavarkal narakattil irupparkal"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "niyayattirppu nalil avarkal atil piravecipparkal"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "melum, avarkal atiliruntu (tappittu) maraintu vita mattarkal"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "niyayat tirppu nal enna venru umakku arivippatu etu"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "pinnum - niyayat tirppu nal enna enru umakku arivippatu etu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "annalil or atma piritor atmavukku etuvum ceyya cakti peratu, atikaram muluvatum anru allahvukke"
        }
    ]
}