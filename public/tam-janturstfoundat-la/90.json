{
    "chapter": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Innakarattin mitu nan cattiyam ceykinren"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "nir innakarattil (cutantiramakat) tankiyirukkum nilaiyil"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "perror mitum, (perra) cantatiyin mitum cattiyamaka"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "titamaka, nam manitanaik kastattil (ullavanakap) pataittom"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "oruvarum, tan mitu cakti perave mattar' enru avan ennik kolkirana"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "eralamana porulai nan alitten\" enru avan kurukiran"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "tannai oruvarum parkkavillaiyenru avan ennukirana"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "avanukku nam irantu kankalai nam akkavillaiya"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "melum navaiyum, irantu utatukalaiyum (akkavillaiya)"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "anriyum (nanmai, timaiyakiya) irupataikalai nam avanukkuk kanpittom"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "ayinum, avan kanavayaik katakkavillai"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "(napiye!) Kanavay enpatu enna enpatai umakku etu arivikkum"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "(atu) or atimaiyai vituvittal"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "allatu, pacittirukkum nalil unavalittalakum"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "uravinanana or anataikko"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "allatu (varumai) mannil puralum or elaikko (unavalippatakum)"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "pinnar, iman kontu, porumaiyaik kontu oruvarukkoruvar upatecittum, kirupaiyaik kontu oruvaruk koruvar upatecittum vantavarkalil iruppatuvum (kanavayaik katattal) akum"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "attakaiyavar tam valappurattil iruppavarkal"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "anal, evarkal nam vacanankalai nirakarikkirarkalo, avarkal tam itappakkattaiyutaiyor"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "avarkal mitu (eppakkamum) mutappatta neruppu irukkiratu"
        }
    ]
}