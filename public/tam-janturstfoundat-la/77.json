{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "totarcciyaka anuppappatupavai (karru)kal mitu cattiyamaka"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "vekamaka vicukiravai (puyal karrukal) mitu (cattiyamaka)"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "(mekankalaip) paravalakap parappum (malaik karrukal) mitu cattiyamaka"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "(cattiyattaiyum acattiyattaiyum) verupatutti kattuvor (vanavarkal) mitum (cattiyamaka)"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "(itayankalil) upatecattaip potuvor (vanavar) mitum (cattiyamaka)"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(anta upatecam) mannippaiyo, allatu eccarikkaiyaiyo (ullatakkiyatakum)"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "niccayamaka unkalukku vakkalikkappattatu nikalvateyakum"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "innum, natcattirankal alikkappatumpotu"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "melum, vanam pilakkappatum potu"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "anriyum, malaikal (tucikalaip pol) parakkatikkappatumpotu"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "melum, tutarkalukku(t tam camukattarukkakac catciyam kura) neram kurikkappatumpotu"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "enta nalvarai (ivaiyellam) pirpatuttappattirukkinrana"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "tirppukkuriya nalukkakattan"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "melum, tirppukkuriya nal ennavenru umakku etu arivittatu"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "(nam vacanankalaip) poyppipporukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "munnor(kalil kurravali)kalai nam alikkavillaiya"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Piraku pinnullavar(kalil kurravali)kalaiyum (alintavarkalaip) pin totarac ceyvom"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "kurravalikalai ivvarutan nam ceyvom (tantippom)"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "poyppippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "arpa nirttuliyiliruntu unkalai nam pataikkavillaiya"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "pinnar atanaip pattiramana itattil (karppattil) urutiyaka akkivaittom"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "oru kurippitata (kala) alavu varai"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "ivvaru name atai amaittirukkinrom. Amaipporil name melanor"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "poyppipvarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "pumiyai unkalai anaittu (itam tantu)k kontiruppataka nam akkavillaiya"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "uyirullorukkum, marittorukkum (atu itam alikkiratu)"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "anriyum, atil uyarnta malaikalaiyum nam akkinom; inimaiyana tanniraiyum nam unkalukkup pukattinom"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "poyppipvarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "ninkal etaip poyppatuttik kontiruntirkalo, atan pal natappirkalaka\" (enru avarkalukkuk kurappatum)"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "munru kilaikalutaiya (narakap pukai) nilalin pal natappirkalaka"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "(atu) nilalalippatumalla, (narakin) katuntalalai vittuk kapparruvatumalla"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "niccayamaka atu periya malikaikalaip ponra neruppup porikalaik kontu vici erintu kontu irukkum"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "niccayamaka atu mancal niramulla ottakaikal pol irukkum"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "poyppippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "itu, avarkal (etuvum) peca mutiyata nal"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "anriyum (tappuvippatarkakap) pukal kuravum avarkal anumatikkappatamattarkal"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "poypippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "itu tirppukkuriya nalakum. Unkalaiyum, (unkalukku) mun iruntoraiyum nam onru cerkkum (nal)"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Enave, (tantanaiyiliruntu tappittuk kolla) unkalitam culcciyirukkumanal, culcci ceytu parunkal"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "poyppipvarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "niccayamaka, payapaktiyutaiyavarkal (kulir) nilalkalilum, nirc cunaikalilum irupparkal"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "innum, avarkal virumpum kanivakaikalum untu"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "ninkal ceytu kontirunta (nar) ceyalkalin karanamaka, ciramaminri, taralamaka puciyunkal innum parukunkal\" (enru kurappatum)"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "niccayamaka, ivvare nanmai ceyvorukku nam kuli kotuppom"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "poyppippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "(poyyakkuvore ulakil) innum konca (kala)m ninkal pucittuk kontum, cukittukkontum irunkal - niccayamaka ninkal kurravalikale"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "poyppippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "ninkal kunintu vanankunkal' enru avarkalitam kurappattal, avarkal kunintu vanankamattarkal"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "poyppippavarkalukku annalil ketutan"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "enave, itan pinnar enta visayattin mitutan avarkal iman kolvarkal"
        }
    ]
}