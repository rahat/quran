{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "vanattin mitu cattiyamaka! Tarik mitum cattiyamaka"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "tarik ennavenru umakku arivittatu etu"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "atu ilankum oru natcattiram"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "ovvoru atmavukku oru patukavalar illamalillai"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "manitan etiliruntu pataikkappattan enpatai kavanikkattum"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "kutittu velippatum (oru tuli) nirinal pataikkappattan"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "mutukan tantirkum, vila elumpukalukkum itaiyiliruntu atu veliyakiratu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "iraivan (manitan iranta pin avanai uyirppittu) mittum caktiyutaiyavan"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "irakaciyankal yavum velippattuvitum annalil"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "manitanukku enta palamum iratu, (avanukku) utavi ceypavanum illai"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "(tirumpat tirumpap) poliyum malaiyai utaiya vanattin mitu cattiyamaka"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(tavarankal mulaippatarkup) pilavu patum pumiyin mitum cattiyamaka"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "niccayamaka itu (kur'an cattiyattaiyum, acattiyattaiyum) pirittu arivikkakkutiya vakkakum"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "anriyum, itu vinana (varttaikalaik konta)tu alla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "niccayamaka avarkal (umakketirakac) culcci ceykirarkal"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "nanum (avarkalukketirakac) culcci ceykiren"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "enave, kahpirkalukku nir avakacamalippiraka, corpamaka avakacam alippiraka"
        }
    ]
}