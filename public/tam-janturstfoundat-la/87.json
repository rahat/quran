{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "(napiye!) Mikka melanavanana um'mutaiya iraivanin tirunamattai(t tiyanittu) taspihu ceyviraka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "avane (yavarraiyum) pataittuc cevvaiyakkinan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "melum, avane (avarrukku ventiya anaittaiyum) alavupata nirnayittu (avarraip peruvatarku) nervali kattinan"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "anriyum avane (kal nataikalukkena) meyccalukkuriyavarraiyum veliyakkinan"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "pinnar avarrai ularnta kulankalaka akkinan"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "(Napiye!) Nam umakku otakkarruk kotuppom; atanal nir atai marakkamattir"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allah natiyatai allamal - niccayamaka, avan velippataiyanataiyum maraintiruppataiyum arikiran"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "anriyum, ilecana (markkat)tai nam umakku elitakkuvom"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "akave, nallupatecam payanalikkumayin, nir upatecam ceyviraka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(allahvukku) ancupavan viraivil upatecattai erpan"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "anal turpakkiyamutaiyavano, atai vittu vilakik kolvan"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "avan tan perum neruppil pukuvan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnar, atil avan marikkavum mattan; valavum mattan"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tuymaiyataintavan, tittamaka verri perukiran"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "melum, avan tan iraivanutaiya namattait tutittuk kontum, tolutu kontum iruppan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "eninum, ninkalo (marumaiyai vittu vittu) ivvulaka valvait terntetuttuk kolkirirkal"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "anal marumai (valkkai)yo cirantatakum; enrum nilaittiruppatum akum"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "nicyacamaka itu muntiya akamankalilum"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "iprahim, musavinutaiya akamankalilum (ivvare arivippu) irukkiratu"
        }
    ]
}