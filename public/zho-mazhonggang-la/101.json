{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Da nan [fuhuo ri]."
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Da nan shi shenme?"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Ni zen neng zhidao da nan shi shenme?"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Zai na ri, renlei jiang xiang sanluan de fei e,"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "qun shan jiang xiang shuguo de rongmao."
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Zhiyu shangong zhong zhe,"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "ta jiang huode yukuai de shenghuo [leyuan];"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "zhiyu shangong qing zhe,"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "shen keng [huo yu] jiang shi ta de guisu."
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ni zen neng zhidao shen keng shi shenme?"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Na shi ranshaozhe de liehuo."
        }
    ]
}