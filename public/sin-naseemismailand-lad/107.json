{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "(nabiyē! viniścaya dina) tīnduva boru karannāva oba (avadhānaya kara) bælūvehida"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "(disāvak nomæti) anāthayinva eḷavā damannā ohuya"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "ohu duppatunṭa (āhāra labā nodena atara) āhāra labā dena men (an ayava) poḷam̆bavannēda næta"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "tavada tamangē salātayehi nosælakilimatva siṭina"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(vaṁcanikayin vana) salāt karannanṭada vināśayayi"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "ovun (salāt kaḷā vuvada janatāvaṭa) penvīma san̆dahāma salāt karannāha"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "(in̆di kaṭu væni) alpa vastuvada (pāvicci kara āpasu dīmaṭa vuvada) vaḷakvā gannāha"
        }
    ]
}