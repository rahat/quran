{
    "chapter": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahmân (çok merhametli olan Allah)"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kurân´ı öğretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "İnsanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı öğretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Güneş de ay da bir hesab iledir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler ve ağaçlar secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Göğü yükseltti ve mizanı koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Sakın tartıda taşkınlık etmeyin"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartıyı adaletle yapın, terazide eksiklik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "(Allah) yeri mahlukat için (aşağıya) koydu"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyvalar ve salkımlı hurma ağaçları vardır"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yapraklı taneler ve hoş kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Allah insanı, pişmiş bir çamura benzeyen bir balçıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de hâlis ateşten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "iki doğunun ve iki batının Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "(Acı ve tatlı) iki denizi salıverdi birbirine kavuşuyorlar"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Fakat aralarında bir engel vardır, birbirlerine geçip karışmıyorlar"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "İkisinden de inci ve mercan çıkar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizde koca dağlar gibi yükselen gemiler de onundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 26,
            "text": "Yer üzerinde bulunan her şey fânidir"
        },
        {
            "chapter": 55,
            "verse": 27,
            "text": "Yalnız celâl ve ikram sahibi Rabbinin yüzü (zâtı) baki kalacaktır"
        },
        {
            "chapter": 55,
            "verse": 28,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 29,
            "text": "Göklerde ve yerde bulunanlar, O´ndan isterler. O, her gün yeni bir iştedir"
        },
        {
            "chapter": 55,
            "verse": 30,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 31,
            "text": "Ey insan ve cin! Sizin de hesabınızı ele alacağız"
        },
        {
            "chapter": 55,
            "verse": 32,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 33,
            "text": "Ey cin ve insan toplulukları! Göklerin ve yerin çevresinden geçmeye gücünüz yeterse geçin gidin. Ama Allah´ın verdiği bir güç olmadan geçemezsiniz"
        },
        {
            "chapter": 55,
            "verse": 34,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 35,
            "text": "Üzerinize ateşten alev ve duman gönderilir, kendinizi savunamazsınız"
        },
        {
            "chapter": 55,
            "verse": 36,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 37,
            "text": "Gök yarılıp da, erimiş yağ gibi kıpkırmızı bir gül olduğu zaman"
        },
        {
            "chapter": 55,
            "verse": 38,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 39,
            "text": "İşte o gün, ne insana ne de cinne günahından sorulmaz"
        },
        {
            "chapter": 55,
            "verse": 40,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 41,
            "text": "Suçlular simalarından tanınır, alınlarından ve ayaklarından tutulur"
        },
        {
            "chapter": 55,
            "verse": 42,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 43,
            "text": "İşte bu, suçluların yalanladığı cehennemdir"
        },
        {
            "chapter": 55,
            "verse": 44,
            "text": "Onunla kaynar su arasında dolaşırlar"
        },
        {
            "chapter": 55,
            "verse": 45,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 46,
            "text": "Rabbinin makamından korkan kimselere iki cennet vardır"
        },
        {
            "chapter": 55,
            "verse": 47,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 48,
            "text": "İkisinin de çeşitli ağaçları, meyvaları vardır"
        },
        {
            "chapter": 55,
            "verse": 49,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 50,
            "text": "İkisinde de akıp giden iki kaynak vardır"
        },
        {
            "chapter": 55,
            "verse": 51,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 52,
            "text": "İkisinde de her türlü meyvadan çift çift vardır"
        },
        {
            "chapter": 55,
            "verse": 53,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 54,
            "text": "Astarları atlastan yataklara yaslanırlar. İki cennetin de devşirmesi yakındır"
        },
        {
            "chapter": 55,
            "verse": 55,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 56,
            "text": "Oralarda gözlerini yalnız eşlerine çevirmiş dilberler var ki, bunlardan önce onlara ne insan ne de cin dokunmuştur"
        },
        {
            "chapter": 55,
            "verse": 57,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 58,
            "text": "Sanki onlar yâkut ve mercandırlar"
        },
        {
            "chapter": 55,
            "verse": 59,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 60,
            "text": "İyiliğin karşılığı, yalnız iyilik değil midir"
        },
        {
            "chapter": 55,
            "verse": 61,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 62,
            "text": "Bu ikisinden başka iki cennet daha vardır"
        },
        {
            "chapter": 55,
            "verse": 63,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 64,
            "text": "(Bu cennetler) yemyeşildirler"
        },
        {
            "chapter": 55,
            "verse": 65,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 66,
            "text": "İkisinde de fışkıran iki kaynak vardır"
        },
        {
            "chapter": 55,
            "verse": 67,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 68,
            "text": "İkisinde de her türlü meyva, hurma ve nar vardır"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "İçlerinde güzel huylu, güzel yüzlü kadınlar vardır"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "Çadırlar içerisinde gözlerini yalnız kocalarına çevirmiş hûriler vardır"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "Bunlardan önce onlara ne insan ne de cin dokunmuştur"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "Yeşil yastıklara ve hârikulâde güzel işlemeli döşeklere yaslanırlar"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "Şimdi Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "Büyüklük ve ikram sahibi Rabbinin adı ne yücedir"
        }
    ]
}