{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Gezegenler saçıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler akıtılıp taşırıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Mezarların içi dışına çevrildiği zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her kişi, yaptığını ve yapmadığını öğrenecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni Onurlu olan Rabbine karşı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki seni yarattı, düzenledi, uyumlu hale soktu"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Dilediği bir biçimde seni oluşturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Doğrusu, siz, dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki üstünüzde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Onlar onurlu kayıtçılardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler nimetler içindedir"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler ise cehennemde"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din Günü oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan hiç ayrılamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din Gününün ne olduğunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, Din Gününün ne olduğunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün kimsenin kimseye yardımı dokunmaz. O gün tüm kararlar yalnız ALLAH'a aittir"
        }
    ]
}