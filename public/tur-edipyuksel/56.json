{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kaçınılmaz olay gerçekleştiği zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerçekleşmesini artık yalanlayan çıkmaz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alçaltıcıdır, yücelticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yerin sallanıp sarsılacağı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve dağların paramparça edileceği zaman"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Artık o toz duman haline gelmiştir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler de üç bölüme ayrılırsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Mutlular ne kadar da mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Mutsuzlar ne kadar da mutsuzdurlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Bir de ileri geçen öncü elitler vardır"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar (Tanrı'ya) yaklaştırılanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerinde (bahçelerinde)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların büyük bir kısmı önceki nesillerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Küçük bir kısmı da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Lüks mobilyalar üzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı yaslanmışlardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onlara ölümsüz gençler servis yaparlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynaktan doldurulmuş bardaklar, sürahiler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne ara verirler ne de yorulurlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Güzel eşler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Korunmuş inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmış olduklarına bir karşılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bir saçmalık, ne de günaha sokan bir söz işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece, \"Selam, selam,\" derler"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağ tarafta olanlar sağ tarafta olacaklar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz meyve ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmış muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fışkıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bol meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bunlar ne tükenirler, ne de yasak edilirler"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve onlar yükseltilmiş mobilyalar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden biçimlendirdik"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, gençleştirdik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Mükemmel biçimde eşlenmişlerdir"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ tarafta olanlar içindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Onların bir çoğu önceki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Onların bir çoğu da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol tarafta bulunanlar, sol tarafta olacaklardır"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İşleyen ve kaynayan bir azap içindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Sıcak gölgeler altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne soğuktur, ne de yararlı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Bundan önce onlar konfor içinde şımarmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı işlemekte direniyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Diyorlardı ki, \"Biz öldükten, toz ve kemiğe dönüştükten sonra mı diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki, \"Öncekiler de, sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Bilinen günün buluşma anı için toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra da siz, ey sapıtmışlar, ey yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Zakkum ağacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Onunla karnınızı dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ve üzerine kaynar su içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış devenin içişi gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Yargı gününde işte böyle ağırlanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık, doğrulamanız gerekmez miydi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attığınız meniye dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Siz mi onu yaratıyorsunuz, yoksa biz mi yaratıyoruz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümünüzü önceden biz belirledik. Kimse bizi engelleyemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi başka nesillerle değiştirmekten, yahut sizi bilmediğiniz bir biçimde yaratmaktan"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "İlk yaratılışı biliyorsunuz. Öğüt almalı değil misiniz"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğinize dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Siz mi onu yetiştiriyorsunuz, yoksa biz mi"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu samana çevirirdik de siz şaşardınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Borca girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Doğrusu, yoksun bırakıldık"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçmekte olduğunuz suya dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu bulutlardan siz mi indiriyorsunuz, yoksa biz mi"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Şükretmez misiniz"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Yakmakta olduğunuz ateşe dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi başlattınız, yoksa biz mi başlatmaktayız"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Kullananlar için biz onu bir ibret ve yararlı yaptık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse Büyük Rabbinin ismini yücelt"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Onun ne büyük bir yemin olduğunu bir bilseniz"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Bu, onurlu bir Kuran'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Onu ancak temizler kavrayabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Evrenlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Siz bu sözü mü küçümsüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "İnkar etmeyi iş mi ediniyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Ya can boğaza dayandığı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O anda siz bakınmaktasınız"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona (can çekişene) sizden daha yakınız; ancak siz göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Yaptığınızın karşılığını görmeyeceğiniz doğruysa"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu geri çevirsenize, eğer doğru sözlü iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Ancak o, (bana) yaklaştırılanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "o zaman neşe, çiçekler ve nimet cennetleri"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "O, sağda olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Sana sağdakilerden selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Ama o yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "kaynar sudan bir ağırlanma"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "ve cehennemde yanma"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Mutlak gerçek budur"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse Büyük Rabbinin ismini yücelt"
        }
    ]
}