{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun bürüdüğü zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya çıktığı zaman gündüze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "İşleriniz çeşit çeşittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir ve erdemli davranır"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve iyiyi, güzeli doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona iyice kolaylaştırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat, kim cimrilik edip zenginlik taslar"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve iyiyi, güzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da zora yöneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Düştüğü vakit kurtaramaz parası/malı onu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğruya biz iletiriz"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Sonu da ilki de biz kontrol ederiz"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alevli bir ateşe karşı uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Oraya talihsiz olandan başkası girmez"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "O ki yalanladı ve sırtını döndü"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Erdemli ise ondan uzak tutulacaktır"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "O ki malını vererek temizlenir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "Hiç kimseden de buna karşılık bir iyilik beklemez"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Sadece En Yüce olan Rabbinin rızasını gözetir"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Kendisi de yakında mutlu olacaktır"
        }
    ]
}