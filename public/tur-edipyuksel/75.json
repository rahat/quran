{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Diriliş Gününe and içerim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Sürekli özeleştiride bulunan kişiye and içerim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "İnsan, kemiklerini bir araya toplayamayız mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet; parmak uçlarını bile düzenlemeye gücümüz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Doğrusu, insan her şeyin önüne sergilenmesini ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Diriliş Günü ne zaman?\" diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Gözün kamaştığı"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ayın tutulduğu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve güneş ile ay bir araya toplandığı zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gün insanoğlu, \"Kaçacak yer nerede?\" der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, bir sığınak yok"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gün son durak Rabb'inin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gün insana, yapıp yapmadığı herşey haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Doğrusu, insan kendi kendisine tanıktır"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Birtakım özürler ortaya atsa da"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu aceleye getirip dilini oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Onu toplamak da okutmak da bize düşer"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Biz onu okuduğumuz zaman, onun okunuşunu izle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra, onu açıklamak da bizim görevimizdir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Ne var ki, siz geçici (dünyayı) seviyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ahireti ise önemsemiyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gün bazı yüzler parlar"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabb'ine bakar"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "O gün bazı yüzler de var ki asıktır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Belkemiğinin kırılacağının endişesi içindedir"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Doğrusu, (nefis) boğaza dayandığı"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Ve, \"Çare bulan var mı?\" dendiği zaman"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Bunun artık o ayrılık zamanı olduğunu anlar"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacakları birbirine dolaşmıştır"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gün sevk Rabbine doğrudur"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "O ne doğruladı, ne de destekledi"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanladı ve yüz çevirdi"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra çalım satarak ailesine gitti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Sen bunu haketmişsin"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Gerçekten sen bunu haketmiş bulunuyorsun"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan, başıboş bırakılacağını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Dökülen meniden bir sperm değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Ve bir embriyoya dönüştükten sonra O yaratıp biçim verdi"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek ve dişi olmak üzere iki çift yarattı"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunları yapanın ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}