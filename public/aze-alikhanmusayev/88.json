{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Aləmi Bürüyənin xəbəri sənə gəlib çatdımı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün neçə-neçə üzlər zəlil olub yerə dikiləcək"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "üzülüb əldən düşəcək"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "çox qızmar oda girəcək"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "qaynar çeşmədən içirdiləcəkdir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara daridən başqa bir yemək verilməyəcəkdir"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O onları nə doydurar, nə də aclıqdan xilas edər"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün neçəsinin üzündə fərəh görünəcək"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "dünyadakı səylərindən məmnun qalacaq"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "uca Cənnətdə olacaq"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "orada faydasız söz eşitməyəcəkdir"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada axar çeşmələr vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada hündür taxtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "düzülmüş piyalələr"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "yan-yana qoyulmuş yastıqlar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "və döşəmələrə sərilmiş xalçalar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Məgər onlar dəvənin necə yaradıldığını görmürlər"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göyün necə yüksəldiyini görmürlər"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların necə sancıldığını görmürlər"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin necə döşədildiyini görmürlər"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Onlara nəsihət ver! Sən yalnız nəsihətçisən"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sən onların üstündə hökmdar deyilsən"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Lakin üz döndərib küfr edəni"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ən şiddətli əzabla cəzalandırar"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şübhəsiz ki, onların dönüşü Bizədir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları sorğu-suala çəkmək də Bizə aiddir"
        }
    ]
}