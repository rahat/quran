{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onu hiç kimse yalanlayamayacaktır"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O kimini alçaltır, kimini de yükseltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yeryüzü şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olup"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Toz halinde boşluğa dağıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler üç gruba ayrıldığınız zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Defterleri sağdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Defterleri soldan verilenler. Vay gele başlarına"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve öncüler, hep önden gidenler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allah´a yakındırlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Bol nimetli cennetlerdedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Çoğu öncü ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın işlemeli tahtlarda otururlar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı olarak bu tahtlara kurulurlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hiç ölmeyecek genç hizmetçiler aralarında dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gürül gürül akan bir çeşmeden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu içki ne başlarını ağrıtır, ne de sarhoş eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoşlarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "İştahla yiyecekleri kuş etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gözlü huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karşılığı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş ve ne günah içerikli bir söz işitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "İşittikleri tek söz «selâm, selâm» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sağdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yüklü muz ağaçları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz gölgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Sürekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yüksek döşekler üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine aşık ve onlarla aynı yaşta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sağdan verilenler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların bazıları eski ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bazıları da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Defterleri soldan verilenler. Vay gele başlarına"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Onlar gözeneklerine işleyen kavurucu bir rüzgar önünde ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kara ve boğucu bir dumanın gölgesi altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serinliği ve ne de okşayıcılığı var"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar vaktiyle varlık içinde azıtmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı (Allah´a ortak koşmayı) işlemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "«Ölüp toprak ve kemik yığını olduktan sonra, biz yeniden mi diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Eski atalarımız da mı?» diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Öncekiler de, sonrakiler de.»"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belirlenmiş bir günün randevusunda bir araya getirileceklerdir"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapık yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Size kesinlikle Zakkum ağacının meyvası yedirilecektir"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Onunla karınlarınız doldurulacaktır"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üzerine de kaynar su içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Onu, içtikçe susayan develer gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Onlar hesap günü işte böyle ağırlanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizleri yaratan biziz, bunu onaylasanıza"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Fışkırttığınız meniyi görüyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz, yoksa onu yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Ölümü aranızda plânlayan biziz. Hiç kimse bizim önümüze geçemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Amacımız benzerlerinizi yerinize geçirmek ve hepinizi bilmediğiniz bir alemde yeniden diriltmektir"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "İlk yaratılmayı bildiniz. Bunu düşünüp ders alsanıza"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğiniz tohumu görüyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa onu bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Eğer isteseydik o ekinlerinizi ot kırıntılarına dönüştürürdük de şaşakalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Derdiniz ki; «Biz borca battık.»"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha doğrusu her şeyimizi kaybettik"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçtiğiniz suyu görüyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu siz mi buluttan yere indiriyorsunuz, yoksa onu indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Eğer isteseydik onu acı yapardık. Şükretsenize"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Tutuşturduğunuz ateşi görüyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yaratıyorsunuz, yoksa onu yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu hem düşündürücü, ibret verici bir uyarıcı, hem de ihtiyacı olanlar için bir yararlanma kaynağı olarak yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse yüce Rabbinin adını noksanlıklardan tenzih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yörüngeleri üzerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Keşke bilseniz bu ne büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Bu kitap, yüce Kur´an´dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Aslı (Allah katındaki) bir kitapta saklıdır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona sadece tertemiz kimseler el sürebilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "O, Allah tarafından indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz bu sözü bu mesajı hafife mi alıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Yalanlamayı kendinize rızık ve ileriye dönük birikim mi yapıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Canın boğaza dayandığı an var ya"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O sırada sizler gözlerinizi o can çekişen adama dikersiniz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona sizden daha yakınız, ama siz göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Eğer yeniden diriltilip hesaba çekilmeyecekseniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eğer söylediğiniz doğru ise o çıkmak üzere olan canı geriye döndürsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer ölmek üzere olan kişi Allah´a yakın olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Esenlik, hoş kokulu çiçekler ve bol nimetli cennet onu bekliyor"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer adam defteri sağdan verileceklerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Defterlerini sağdan alacak olan arkadaşlarının selâmı var sana"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer adam sapık bir inkarcı ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "O kaynar su sunularak ağırlanır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Bu kesin gerçektir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse yüce Rabbinin adını noksanlıklardan tenzih et"
        }
    ]
}