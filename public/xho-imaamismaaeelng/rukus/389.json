{
    "rukus": [
        {
            "chapter": 37,
            "verse": 114,
            "text": "Kananjalo Senzela ubabalo uMûsâ noHârûn (uAron)"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "Sabasindisa bona nabantu bakubo kwinkxwaleko enkulu"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "Sabanceda, khona ukuze babe noloyiso"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "Ke kaloku Sabanika isiBhalo esicacileyo"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "Sabakhokelela eNdleleni ethe Tye"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "Sabashiyela\t(inkumbulo\telungileyo)\tkwizizukulwana ezisezayo"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "“Uxolo malube kuMûsâ noHârûn!”"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "Sibavuza kanjalo ke Thina abenzi bokulungileyo"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "Inene bona (uMûsâ noHârûn) babezizicaka zeThu ezibini ezikholwayo"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "Kananjalo uIlyâs (uEliya) yayingomnye wabaThunywa"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "Xa wathi kubantu bakubo: “Aniyi kumoyika na uAllâh?”"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "Ingaba niza kubiza kuBhali na niyeke Oyena Mdali Wokwenene"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "uAllâh OyiNkosi yenu, OyiNkosi yooyihlo’mkhulu?”"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "Kodwa basuka bamphikisa yena (uIlyâs)4, ngoko ke baza kuziswa ngaphambili (esohlwayweni)"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "Ngaphandle kwezicaka ezikhethiweyo zika-Allâh"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "Yena Samshiyela (inkumbulo elungileyo) kwizizukulwana ezisezayo"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "“Uxolo malube kuIlyâsiîn!”"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "Sibavuza kanjalo keThina abenzi bokulungileyo"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "Inene yena wayengomnye wezicaka zeThu ezikholiweyo"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "Kanti noLût yayingomnye wabaThunywa"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "Xa Samsindisayo yena nosapho lwakhe lonke"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "Ngaphandle kwexhegokazi (umkakhe) elaba ngomnye wabo bashiyeka ngemva"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "Sabatshabalalisa bonke abanye (bezixeko ezo iSodom neGomora)"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "Inene nina nigqitha ngakubo (abo bafela apho) ekuseni"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "Nasebusuku; ingaba aniyi kucingisisa na"
        }
    ]
}