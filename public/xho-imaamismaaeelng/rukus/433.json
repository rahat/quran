{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Inene wona umthi weZa’kkûm"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Uya kuba kukutya kwabenzi bezono"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Unjenge-oli emdaka, ebila ngaphakathi eziswini"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Njengamanzi abilayo atshisayo"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "(Kuya kuthiwa kumntu ongumoni): “Mbambeni nimrhuqele esazulwini soMlilo wesiHogo"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Nize nigalele phezu kwentloko yakhe isohlwayo samanzi abilayo.”"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "(Kuya kuthiwa): “Ngcamla ke, wena ungumhlonitshwa, obekekileyo"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Inene oku koko nanidla ngokukuphika.”"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Inene, abenzi bokulungileyo baya kuba sendaweni yokhuseleko"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Phakathi eMiyezweni nemithombo"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Bambathe(izambatho)zesilikaesulungekileyonehonjisiweyo, bejongene"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "(Kuya kuba njalo) Yaye Siya kubatshatisa neeHûrin’ayn1. Ezinamehlo amakhulu, athandekayo"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Bayakubizaaphonayiphinaintloboyesiqhamobeseluxolweni naselukhuselekweni"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Abasayi kuze bafe apho ngaphandle kokufa kokuqala (kweli hlabathi), yaye Yena Uya kubasindisa entuthumbeni yoMlilo odwanguzayo"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "NjengobuBele obuvela eNkosini yakho! Oko kuya kuba yimpumelelo enkulu"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Inene le (‘Kur’ân) Siyenze yalula elwimini lwakho khona ukuze ukhumbule"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Linda ke (Muhammad) nabo oku kwabo balindile"
        }
    ]
}