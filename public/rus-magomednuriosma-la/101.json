{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Sokrushayushchaya beda (t. ye. Sudnyy den')"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Chto takoye sokrushayushchaya beda"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Otkuda tebe znat', chto takoye sokrushayushchaya beda"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "[Eto sluchitsya] v tot den', kogda lyudi budut rasseyany, slovno motyl'ki"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "kogda gory stanut [myagkimi], slovno raschesannaya sherst'"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Togda tot, ch'ya chasha [dobrykh deyaniy] peretyagivayet na vesakh"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "budet blagodenstvovat'"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "tomu zhe, ch'ya chasha [dobrykh deyaniy] na vesakh okazhetsya legche"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "pristanishchem budet [adskaya] propast'"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Otkuda tebe znat', chto eto takoye"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "[Eto] pylayushchiy ogon'"
        }
    ]
}