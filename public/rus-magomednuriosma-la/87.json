{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Slav' imya Gospoda tvoyego vysochayshego"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "kotoryy sozdal [tvoreniya] i pridal [im] sorazmernost'"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "kotoryy predopredelil im [sud'bu] i napravil [k ney]"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "kotoryy vyrastil [travu] pastbishch"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "a potom issushil yeye docherna"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "My vozveshchayem tebe [Koran], tak ne predavay zhe zabveniyu yego"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "krome togo, chto pozhelayet Allakh: ved' On znayet i yavnoye i sokrovennoye"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "My oblegchim tebe put' k legkomu [zapominaniyu Korana]"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Nastavlyay [, Mukhammad, Koranom], yesli eto pomozhet [ili ne pomozhet]"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Vosprimet [Koran] tot, kto strashitsya [Allakha]"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "i ne vosprimet neschastneyshiy"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "kotoryy voydet v velikiy ogon'"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "I ne budet on tam ni zhit', ni umirat'"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Preuspel tot, kto ochistilsya [blagodarya vere]"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "pominal imya svoyego Gospoda i sovershal obryadovuyu molitvu"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "No net zhe! Vy predpochitayete zhizn' zdeshnyuyu"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "khotya budushchaya zhizn' - luchshe i vechna"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Voistinu, eti [slova] nachertany v svitkakh prezhnikh narodov"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "v svitkakh Ibrakhima i Musy"
        }
    ]
}