{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "عَمَّۖ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ اِ۬لنَّبَإِ اِ۬لْعَظِيمِ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "اِ۬لذِے هُمْ فِيهِ مُخْتَلِفُونَۖ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَيَعْلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَيَعْلَمُونَۖ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "أَلَمْ نَجْعَلِ اِ۬لَارْضَ مِهَٰداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَالْجِبَالَ أَوْتَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَخَلَقْنَٰكُمُۥٓ أَزْوَٰجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَجَعَلْنَا اَ۬ليْلَ لِبَاساࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَجَعَلْنَا اَ۬لنَّهَارَ مَعَاشاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَيْنَا فَوْقَكُمْ سَبْعاࣰ شِدَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَجَعَلْنَا سِرَاجاࣰ وَهَّاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَأَنزَلْنَا مِنَ اَ۬لْمُعْصِرَٰتِ مَآءࣰ ثَجَّاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخْرِجَ بِهِۦ حَبّاࣰ وَنَبَاتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَجَنَّٰتٍ اَلْفَافاًۖ"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "اِنَّ يَوْمَ اَ۬لْفَصْلِ كَانَ مِيقَٰتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "يَوْمَ يُنفَخُ فِے اِ۬لصُّورِ فَتَاتُونَ أَفْوَاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَفُتِّحَتِ اِ۬لسَّمَآءُ فَكَانَتَ اَبْوَٰباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَسُيِّرَتِ اِ۬لْجِبَالُ فَكَانَتْ سَرَاباًۖ"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "اِنَّ جَهَنَّمَ كَانَتْ مِرْصَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطَّٰغِينَ مَـَٔاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لَّٰبِثِينَ فِيهَآ أَحْقَاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَّا يَذُوقُونَ فِيهَا بَرْداࣰ وَلَا شَرَاباً"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "اِلَّا حَمِيماࣰ وَغَسَاقاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَآءࣰ وِفَاقاًۖ"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "اِنَّهُمْ كَانُواْ لَا يَرْجُونَ حِسَاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَكَذَّبُواْ بِـَٔايَٰتِنَا كِذَّاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَےْءٍ اَحْصَيْنَٰهُ كِتَٰباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوقُواْ فَلَن نَّزِيدَكُمُۥٓ إِلَّا عَذَاباًۖ"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "اِنَّ لِلْمُتَّقِينَ مَفَازاً"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَآئِقَ وَأَعْنَٰباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَكَوَاعِبَ أَتْرَاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَكَأْساࣰ دِهَاقاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَّا يَسْمَعُونَ فِيهَا لَغْواࣰ وَلَا كِذَّاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَآءࣰ مِّن رَّبِّكَ عَطَآءً حِسَاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبُّ اُ۬لسَّمَٰوَٰتِ وَالَارْضِ وَمَا بَيْنَهُمَاۖ اَ۬لرَّحْمَٰنُ لَا يَمْلِكُونَ مِنْهُ خِطَاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "يَوْمَ يَقُومُ اُ۬لرُّوحُ وَالْمَلَٰٓئِكَةُ صَفّاࣰ لَّا يَتَكَلَّمُونَ إِلَّا مَنَ اَذِنَ لَهُ اُ۬لرَّحْمَٰنُ وَقَالَ صَوَاباࣰۖ"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذَٰلِكَ اَ۬لْيَوْمُ اُ۬لْحَقُّۖ فَمَن شَآءَ اَ۪تَّخَذَ إِلَيٰ رَبِّهِۦ مَـَٔاباًۖ"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "اِنَّآ أَنذَرْنَٰكُمْ عَذَاباࣰ قَرِيباࣰ يَوْمَ يَنظُرُ اُ۬لْمَرْءُ مَا قَدَّمَتْ يَدَٰهُ وَيَقُولُ اُ۬لْكَافِرُ يَٰلَيْتَنِے كُنتُ تُرَٰباࣰۖ"
        }
    ]
}