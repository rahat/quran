{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Semaya ve Tarık´a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Ve Tarık´ın ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "parlak ısıgı ile karanlıgı delen bir yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Butun nefslerin uzerinde mutlaka muhafız (gozleyici ve koruyucu) vardır"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Artık insan neden yaratıldıgına baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Kuvvetle atılan bir sıvıdan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(O sıvı), omurga ile gogus kafesi arasından (orada bulunan iki sinir merkezinin organize calısması sonucu) cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Muhakkak ki O (Allah), onu (insanı) hayata geri dondurmeye (tekrar diriltmeye) elbette kaadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizli seylerin acıklanacagı gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun bir gucu, kuvveti olmaz ve bir yardımcı da yoktur"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Ve donus sahibi semaya andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Ve yarıklara sahip arza andolsun"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Muhakkak ki o, gercekten (hakkı batıldan) ayıran bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Ve o, sıradan bir soz degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Muhakkak ki onlar, hile yaparak tuzak kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ve Ben de hile yaparak tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Artık kafirlere muhlet ver, onlara biraz sure tanı"
        }
    ]
}