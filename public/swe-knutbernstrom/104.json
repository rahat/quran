{
    "chapter": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "ILLA SKALL det gå den som försöker finna fel hos [andra] och baktalar dem"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "[Och] som samlar pengar på hög och [i stället för att göra gott] ägnar sig åt att räkna dem"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "i förhoppningen att hans rikedom skall ge honom evigt liv"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Nej [han misstar sig]! Han kommer att kastas i Hutamah"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Och vad kan låta dig förstå vad Hutamah betyder"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "[Det är] Guds eld"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "som skall blossa upp och tränga in i [syndarnas] hjärtan"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "och sluta sig omkring dem"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "i ändlösa kolonnader av eld"
        }
    ]
}