{
    "chapter": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "چهره درهم کشید، و روی بر گردانید،"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "از این‌که (عبد الله بن ام مکتوم) نابینا به نزدش آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و (ای پیامبر) چه می‌دانی شاید که او پاک می‌شد"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا پندگیرد، و این پند به او نفع می‌داد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن کس که مجد نیازی نمود"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو به او روی می‌آوری،"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "در حالی‌که اگر او خود را (از کفر) پاک نسازد، چیزی بر تو نیست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اما کسی شتابان به سراغ تو می‌آید"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "و او (از الله) می‌ترسد"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او غافل می‌شوی (و به او توجه نمی‌کنی؟)"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "هرگز چنین نیست، بی‌گمان این (سوره) تذکر و یاد آوری است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هرکس بخواهد از آن پند گیرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در صحیفه‌‌های پر ارزشی (ثبت) است"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلند پایه و پاکیزه"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست (فرشتگان =) سفیران (وحی است)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار و نیکوکار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر (این) انسان، چقدر ناسپاس است؟"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(الله) او را از چه چیز آفریده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "او را از نطفۀ (ناچیز) آفریده است، آنگاه او را موزون ساخت"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه را برای او آسان نمود"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "آنگاه (بعد از پایان عمر) او را میراند، پس او را در قبر (پنهان) کرد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هرگاه که بخواهد او را (زیاده می‌کند و از قبر) بر می‌انگیزد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "هرگز چنین نیست، (که او می‌پندارد) او هنوز آنچه را که (الله) فرمان داده، به‌جای نیاورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس انسان باید به غذای خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "بی‌گمان ما آب فراوان (از آسمان) فرو ریختیم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمین را به نیکی شکافتیم"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "آنگاه در آن دانه (های فراوان) رویاندیم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگور و سبزی (بسیار)"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زیتون و نخل"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌هایی (انبوه و) پردرخت"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و (انواع) میوه و علوفه (پدید آوردیم)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(همۀ این‌ها) برای بهره‌گیری شما و چهارپایانتان است"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس هنگامی‌که (آن) صدای مهیب (قیامت) فرا رسد"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی‌که انسان از برادرش می‌گریزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادرش و از پدرش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از زنش و فرزندانش (نیز می‌گریزد)"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز هرکس را کاری است که او را به خود مشغولش دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "چهره‌هایی در آن روز گشاده و روشن است"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شاد است"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و چهره‌هایی در آن روز غبار آلود است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "سیاهی (و تاریکی) آن‌ها را پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اینان همان کافران فاجرند"
        }
    ]
}