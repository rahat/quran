{
    "chapter": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Сүңгіп шығарушы"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Баяу тартушы"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Малтап кетуші"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Жарысып озушы"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Сондай-ақ істі меңгеруші періштелерге серт"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "Ол күні қатты сілкініс болады"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Оның артынан тағы бір сілкінеді"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Ол күні жүректер тітірейді"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Көздері төмен қарайды"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "(Олар): \"Шын, қайта тірілеміз бе?\",- дейді"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Қоқым, сүйек болған сәтте де"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "(Олар): \"Ендеше ол қайғылы бір қайту екен\" дейді"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Негізінен ол, бір айғай ғана"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Дереу сол уақытта олар майданда"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Саған Мұсаның хабары келді ме"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Сол уақытта, Раббы, оған қасиетгі \"Тұуа\" ойпатында дабыстады"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Перғауынға бар. Өйткені ол, азды"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Сонда оган: \"Тазарғың келе ме?\",- де"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Саған Раббыңа баратын жолды көрсетейін. Одан қорқарсың"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Мұса, Перғауынға ірі мұғжизаны көрсетті"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Сонда ол, жасынға шығарып, қарсы шықты"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Кейін теріс айналып, жүгірді"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Адамдарды жинап, айғай салып"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Мен сендердің ең ұлы раббыларың\" деді"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Сондықтан Алла, оны ахирет, дүние азабымен қолға алды"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Расында бұнда қорыққан кісі үшін әлбетте бір ғибрат бар"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Сендерді жарату қиын ба? Немесе аспанды? Алла, оны да жасады"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Оның биіктігін көтеріп, оны теңгерді"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Оның түнін қараңғылатып, күндізін жарыққа шығарды"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Сосын жерді төседі"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Одан су және жайылыс майданға келтірді"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Оған таулар орналастырды"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Сендер және малдарың пайдалану үшін"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Бірақ ол ірі уақиға (қиямет) келген сәтте"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Ол күні адамзат не нәрсеге тырысқанын есіне алады"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Тозақ, көретіндерге көрсетіледі"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Ал енді кім шектен шыққан болса"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Оған дүние әсер еткен болса"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Сонда рас оның орны тозақ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ал енді кім, Раббыны; алдына түрудан қорқып, нәпсісі соққан нәрседен тежеген болса"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Негізінде оның барар жері ұжмақ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "(Мұхаммед Ғ.С.) олар саған \"Қиямет қашан болады?\",- деп сұрақ қояды"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Ол жөнде түсіні беру сенің ісің бе"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Оны қортындысы, Раббыңа байланысты"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Негізінен сен қияметте қорыққан кісілерге бір ескертуші ғанасың"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Олар қияметті көрге күні, дүниеде бір кеш немесе бір сәске тұрғандай ойлайды"
        }
    ]
}