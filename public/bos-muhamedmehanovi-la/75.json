{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kunem se Kijametskim danom"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "i kunem se dusom koja sebe kori"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Zar covjek misli da kosti njegove necemo sakupiti"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Svakako, a Mi mozemo izravnati jagodice prstiju njegovih"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Ali, covjek hoce da negira ono sto pred njim je"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "pa pita: \"Kada ce Kijametski dan biti"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Kada se pogled zbuni"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "i Mjesec pomraci"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "i Sunce i Mjesec smotaju, pa sjaj izgube"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "taj dan covjek ce povikati: \"Gdje da se bjezi"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Ne, nema pribjezista"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Taj dan tvome je Gospodaru povratak"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "taj dan covjek ce o onome sto je pripremio, a sto je propustio, obavijesten biti"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Stavise, covjek sebe dobro zna - sam ce protiv sebe svjedok biti"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "makar iznosio svoja opravdanja"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ne izgovaraj Kur'an jezikom svojim da bi ga sto prije zapamtio"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Mi smo ga duzni sakupiti da bi ga ti citao"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "A kada ga citamo, ti prati citanje njegovo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "a poslije, Mi smo ga duzni objasniti"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Ali, naprotiv, vi ovaj prolazni svijet volite"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "a onaj drugi - ahiret zapostavljate"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Taj dan neka lica blistava ce biti"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "u Gospodara svoga ce gledati"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Taj dan neka lica smrknuta ce biti"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "znat ce da ce ih snaci velika nesreca"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Pazi, kada dusa dopre do kljucnih kostiju"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "i vikne se: \"Ko je vidar da vida"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "i on se uvjeri da je to cas rastanka"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "i noga se uz nogu savije"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Taj dan ce Gospodaru tvome privoÄ‘enje biti"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Nije vjerovao i nije klanjao"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "nego je poricao i okretao se"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "a onda je svojim oholo odlazio"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Tesko tebi! Tesko tebi"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "i jos jednom: Tesko tebi! Tesko tebi"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Zar covjek misli da ce zaludu ostavljen biti"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Zar nije bio kap sjemena koja se ubaci"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "zatim zakvacak kome On onda razmjer odredi i skladnim mu lik ucini"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "i od njega dvije vrste, muskarca i zenu, stvori"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "i zar Taj nije kadar mrtve oziviti"
        }
    ]
}