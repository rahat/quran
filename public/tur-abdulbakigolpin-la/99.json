{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yeryuzu, siddetli bir depremle sarsılınca"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yeryuzu, agırlıklarını cıkarınca"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan, ne oluyor ki buna deyince"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun, butun haberlerini anlatınca"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin, vahyetmistir, bildirmistir ona"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, gittikleri yerden gelirler, yaptıklarını gormek icin"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim, bir zerre agırlıgı hayır yapmıssa gorur onu"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim, bir zerre agırlıgı ser yapmıssa gorur onu"
        }
    ]
}