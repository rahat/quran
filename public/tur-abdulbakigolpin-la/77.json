{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun, ardı ardınca, iyilikle gonderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Siddetle esip yelenlere"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Bulutları yayıp surenlere"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Gercekle aslı olmayanı ayırt edenlere"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ogutleri telkin edenlere"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ozurle sucu yok etmek hususunda olsun, yahut korkutma hususuna ait bulunsun"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Suphe yok ki size vaat edilen, mutlaka olacak"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızların ısıkları sonunce"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Ve gok yarılınca"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Ve daglar, yerlerinden kopup dumduz olunca"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Ve peygamberler toplanınca"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Hangi gun icin geciktirildi bunlar"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Ayırma gunu icin"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ve nedir, bilir misin ayırma gunu"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Once gelenleri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra da son gelenleri tutar, katarız onlara"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Boyle yaparız gunahkarlara"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi, bayagı ve azıcık bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Derken onu, karar edilecek kuvvetli bir yerde tutmadık mı"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir muddete dek"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Derken taktir ettik yaratılısını, ne guzel de takdir ederiz biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryuzunu, bir toplantı yeri olarak halk etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Dirilere ve olulere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve orada, sabit ve metin daglar yarattık ve sizi, tatlı suyla suvardık"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yuruyun yalanladıgınıza dogru"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Yuruyun uc kola ayrılmıs golgeye dogru"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ne golgelendirir sizi o, ne alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, kosk gibi kıvılcımlar fırlatır"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o kıvılcımlar, birer sarı erkek devedir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, bir gundur ki soz soyleyemezler"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Onlara izin de verilmez, ozur getiremezler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Budur ayırma gunu, sizi de toplarız, oncekileri de"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Artık bir duzeniniz varsa duzup kosun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Suphe yok ki cekinenler, golgeliklerdedir ve pınar baslarında"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "arzuladıkları meyveleri bulurlar"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yiyin ve icin, afiyetler olsun yaptıklarınıza karsılık"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Suphe yok ki boyle mukafatlandırırız iyilik edenleri"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin ve gecinin az bir muddet, suphe yok ki suclularsınız siz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Ruku edin denince onlara, ruku etmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Vay hallerine o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Bundan sonra artık hangi soze inanırlar ki"
        }
    ]
}