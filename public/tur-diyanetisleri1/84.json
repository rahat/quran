{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarildigi"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatilip düzlendigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Içinde ne varsa attigi ve tamamen bosaldigi"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Kuskusuz sen Rabbine dogru çaba üstüne çaba sarfetmektesin, nihayet O'na varacaksin"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O vakit kitabi sag eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabi arkasindan verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Yetis ey ölüm!\" diye bagiracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o ailesi içinde sevinçli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Hiç Rabbine dönmeyecegini sanmisti"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayir Rabbi onu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Simdi, yemin ederim o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve içinde barindirdigi seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Derlendigi zaman o aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar neden acaba iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsilarinda Kur'ân okundugu vakit secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine o nankörler yalanliyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah içlerinde sakladiklarini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara elem verici bir azabi müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi ameller isleyenler baskadir. Onlara tükenmez bir ecir vardir"
        }
    ]
}