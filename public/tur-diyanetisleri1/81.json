{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Günes katlanip dürüldügünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yildizlar bulandiginda"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yürütüldügünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kiyilmaz mallar birakildiginda"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandiginda"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateslendiginde (sulari çekilip, volkanlar halinde ates püskürdügünde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eslestirildiginde (iyiler iyilerle, kötüler kötülerle bir araya toplandiginda)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gömülen kiza soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günahtan dolayi öldürüldü?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri açildiginda"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök siyrilip açildiginda"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kizistirildiginda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklastirildiginda"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmis oldugunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Simdi yemin ederim o sinenlere (gündüzleri gözden kaybolan yildizlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akip akip yuvasina gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yöneldigi an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendigi (agardigi) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuskusuz o Kur'an, degerli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi güçlüdür, Ars'in sahibinin yaninda çok itibarlidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, güvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasinizi cin çarpmis degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i açik ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkinda cimri de degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus bir seytanin sözü degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hâl böyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, âlemler için ögütten baska bir sey degildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Içinizden dogru gitmek isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Âlemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}