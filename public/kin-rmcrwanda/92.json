{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "Ndahiriye ku ijoro igihe riguye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "No ku manywa igihe atangaje"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "No ku waremye ikigabo n’ikigore"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Mu by’ukuri, ibikorwa byanyu biratandukanye"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Wawundi utanga (amaturo) akanatinya (Allah)"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Kandi akizera icyiza (Ijuru)"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Tuzamworohereza inzira y’ibyiza"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Ariko uzaba umunyabugugu, akirata yumva ko (yishoboye)"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Akanahinyura icyiza"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Tuzamworohereza inzira y’ibibi"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Kandi ubwo azaba arimbuka (ajyanywe mu muriro), umutungo we ntacyo uzamumarira"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Mu by’ukuri, ukuyobora ni ukwacu"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Kandi mu by’ukuri, ni na twe tugenga iby’imperuka n’ibibanza (iby’isi)"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Bityo, mbaburiye umuriro ugurumana"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Ntawe uzawinjiramo utari inkozi y’ibibi"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "Wawundi wahinyuye (ukuri) akanagutera umugongo"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Ariko ukora ibikorwa byiza, azawurindwa"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "Wawundi utanga umutungo we kugira ngo yiyeze"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "Kandi ntashishikazwe no kwiturwa n’uwo yagiriye neza"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Ahubwo (akabikora agamije) gushaka kwishimirwa na Nyagasani we, Uwikirenga"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Kandi rwose azishima (ubwo azinjira mu Ijuru)"
        }
    ]
}