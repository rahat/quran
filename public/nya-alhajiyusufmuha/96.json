        {
            "chapter": 96,
            "verse": 1,
            "text": "Werenga! Mâ€™dzina la Ambuye wako amene analenga"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Yemwe adalenga munthu kuchokera ku kadontho kamagazi oundana"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "werenga! Ndipo Ambuye wako ndiye wopereka mowoolowa manja"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Amene anaphunzitsa ndi cholembera"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Anaphunzitsa munthu chimene sanali kuchidziwa"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Iyayi! Ndithudi, munthu amalakwa mopyola muyeso"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Chifukwa amaganiza kuti iye ndi oima payekha"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Ndithudi! Nonse mudzabwerera kwa Ambuye wanu"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Kodi mwamuona munthu amene amaletsa"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Kapolo pamene akupemphera"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Kodi mwamuona ngati iye alikutsatira chilangizo chabwino"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Kapena kulamulira machitidwe abwino"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ndiuze ngati iye akana choonadi ndipo salabadira"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Kodi iye sadziwa kuti Mulungu amaona zinthu zonse"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Iyayi! Ngati iye sasiya, Ife tidzamududuluza pogwira tsitsi la pa mphumi pake"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Mphumi yabodza ndi yochimwa"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Ndipo mulekeni iye aitane anzake oti amuthandize"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Ife tidzaitana osunga Gahena"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Iyayi! Usamumvere iye. Gunditsa mphumi yako pansi ndipo idza pafupi ndi Mulungu"
        }
    ]
