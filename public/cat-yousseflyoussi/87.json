{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Glorifica el nom del teu Senyor, l'Altíssim"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Que ha creat i donat forma harmoniosa"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Que ha determinat i dirigit"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Que ha tret la pastura"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "i, després, fet d'ell obscur fenc"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Et farem recitar i, així no oblidaràs"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "excepte el que Al·là vulgui. Ell coneix el palès i l'amagat"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Et facilitarem l'accés a la major felicitat"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Amonesta, doncs, si l'amonestació aprofita"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Es deixarà amonestar qui temen(Al·là)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "i l'evitarà l'infame"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "que cremarà en el tan Gran Foc"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "On ni morirà ni viurà"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Benaventurat, en canvi, qui es purifiqui"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "qui esmenti el nom del seu Senyor i ori"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Però preferiu la vida d'aquí"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "sent així que l'altra és millor i més duradora"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Això es troba en les Fulles Primers"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "les Fulles d'Abraham i de Moisés"
        }
    ]
}