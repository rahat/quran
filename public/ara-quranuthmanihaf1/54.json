{
    "chapter": [
        {
            "chapter": 54,
            "verse": 1,
            "text": "اقتربت الساعة وانشق القمر"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "وان يروا ءاية يعرضوا ويقولوا سحر مستمر"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "وكذبوا واتبعوا اهواءهم وكل امر مستقر"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "ولقد جاءهم من الانباء ما فيه مزدجر"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حكمة بلغة فما تغن النذر"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "فتول عنهم يوم يدع الداع الى شيء نكر"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "خشعا ابصرهم يخرجون من الاجداث كانهم جراد منتشر"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "مهطعين الى الداع يقول الكفرون هذا يوم عسر"
        },
        {
            "chapter": 54,
            "verse": 9,
            "text": "۞كذبت قبلهم قوم نوح فكذبوا عبدنا وقالوا مجنون وازدجر"
        },
        {
            "chapter": 54,
            "verse": 10,
            "text": "فدعا ربه اني مغلوب فانتصر"
        },
        {
            "chapter": 54,
            "verse": 11,
            "text": "ففتحنا ابوب السماء بماء منهمر"
        },
        {
            "chapter": 54,
            "verse": 12,
            "text": "وفجرنا الارض عيون ا فالتقى الماء على امر قد قدر"
        },
        {
            "chapter": 54,
            "verse": 13,
            "text": "وحملنه على ذات الوح ودسر"
        },
        {
            "chapter": 54,
            "verse": 14,
            "text": "تجري باعيننا جزاء لمن كان كفر"
        },
        {
            "chapter": 54,
            "verse": 15,
            "text": "ولقد تركنها ءاية فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 16,
            "text": "فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 17,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 18,
            "text": "كذبت عاد فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 19,
            "text": "انا ارسلنا عليهم ريح ا صرصر ا في يوم نحس مستمر"
        },
        {
            "chapter": 54,
            "verse": 20,
            "text": "تنزع الناس كانهم اعجاز نخل منقعر"
        },
        {
            "chapter": 54,
            "verse": 21,
            "text": "فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 22,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 23,
            "text": "كذبت ثمود بالنذر"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "فقالوا ابشر ا منا وحد ا نتبعه انا اذ ا لفي ضلل وسعر"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "اءلقي الذكر عليه من بيننا بل هو كذاب اشر"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "سيعلمون غد ا من الكذاب الاشر"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "انا مرسلوا الناقة فتنة لهم فارتقبهم واصطبر"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "ونبيهم ان الماء قسمة بينهم كل شرب محتضر"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "فنادوا صاحبهم فتعاطى فعقر"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "انا ارسلنا عليهم صيحة وحدة فكانوا كهشيم المحتظر"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "كذبت قوم لوط بالنذر"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "انا ارسلنا عليهم حاصبا الا ءال لوط نجينهم بسحر"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "نعمة من عندنا كذلك نجزي من شكر"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "ولقد انذرهم بطشتنا فتماروا بالنذر"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "ولقد رودوه عن ضيفه فطمسنا اعينهم فذوقوا عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "ولقد صبحهم بكرة عذاب مستقر"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "فذوقوا عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 41,
            "text": "ولقد جاء ءال فرعون النذر"
        },
        {
            "chapter": 54,
            "verse": 42,
            "text": "كذبوا بايتنا كلها فاخذنهم اخذ عزيز مقتدر"
        },
        {
            "chapter": 54,
            "verse": 43,
            "text": "اكفاركم خير من اوليكم ام لكم براءة في الزبر"
        },
        {
            "chapter": 54,
            "verse": 44,
            "text": "ام يقولون نحن جميع منتصر"
        },
        {
            "chapter": 54,
            "verse": 45,
            "text": "سيهزم الجمع ويولون الدبر"
        },
        {
            "chapter": 54,
            "verse": 46,
            "text": "بل الساعة موعدهم والساعة ادهى وامر"
        },
        {
            "chapter": 54,
            "verse": 47,
            "text": "ان المجرمين في ضلل وسعر"
        },
        {
            "chapter": 54,
            "verse": 48,
            "text": "يوم يسحبون في النار على وجوههم ذوقوا مس سقر"
        },
        {
            "chapter": 54,
            "verse": 49,
            "text": "انا كل شيء خلقنه بقدر"
        },
        {
            "chapter": 54,
            "verse": 50,
            "text": "وما امرنا الا وحدة كلمح بالبصر"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "ولقد اهلكنا اشياعكم فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "وكل شيء فعلوه في الزبر"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "وكل صغير وكبير مستطر"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "ان المتقين في جنت ونهر"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "في مقعد صدق عند مليك مقتدر"
        }
    ]
}