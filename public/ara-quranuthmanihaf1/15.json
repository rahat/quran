{
    "chapter": [
        {
            "chapter": 15,
            "verse": 1,
            "text": "الر تلك ءايت الكتب وقرءان مبين"
        },
        {
            "chapter": 15,
            "verse": 2,
            "text": "ربما يود الذين كفروا لو كانوا مسلمين"
        },
        {
            "chapter": 15,
            "verse": 3,
            "text": "ذرهم ياكلوا ويتمتعوا ويلههم الامل فسوف يعلمون"
        },
        {
            "chapter": 15,
            "verse": 4,
            "text": "وما اهلكنا من قرية الا ولها كتاب معلوم"
        },
        {
            "chapter": 15,
            "verse": 5,
            "text": "ما تسبق من امة اجلها وما يستخرون"
        },
        {
            "chapter": 15,
            "verse": 6,
            "text": "وقالوا يايها الذي نزل عليه الذكر انك لمجنون"
        },
        {
            "chapter": 15,
            "verse": 7,
            "text": "لوما تاتينا بالمليكة ان كنت من الصدقين"
        },
        {
            "chapter": 15,
            "verse": 8,
            "text": "ما ننزل المليكة الا بالحق وما كانوا اذ ا منظرين"
        },
        {
            "chapter": 15,
            "verse": 9,
            "text": "انا نحن نزلنا الذكر وانا له لحفظون"
        },
        {
            "chapter": 15,
            "verse": 10,
            "text": "ولقد ارسلنا من قبلك في شيع الاولين"
        },
        {
            "chapter": 15,
            "verse": 11,
            "text": "وما ياتيهم من رسول الا كانوا به يستهزءون"
        },
        {
            "chapter": 15,
            "verse": 12,
            "text": "كذلك نسلكه في قلوب المجرمين"
        },
        {
            "chapter": 15,
            "verse": 13,
            "text": "لا يومنون به وقد خلت سنة الاولين"
        },
        {
            "chapter": 15,
            "verse": 14,
            "text": "ولو فتحنا عليهم باب ا من السماء فظلوا فيه يعرجون"
        },
        {
            "chapter": 15,
            "verse": 15,
            "text": "لقالوا انما سكرت ابصرنا بل نحن قوم مسحورون"
        },
        {
            "chapter": 15,
            "verse": 16,
            "text": "ولقد جعلنا في السماء بروج ا وزينها للنظرين"
        },
        {
            "chapter": 15,
            "verse": 17,
            "text": "وحفظنها من كل شيطن رجيم"
        },
        {
            "chapter": 15,
            "verse": 18,
            "text": "الا من استرق السمع فاتبعه شهاب مبين"
        },
        {
            "chapter": 15,
            "verse": 19,
            "text": "والارض مددنها والقينا فيها روسي وانبتنا فيها من كل شيء موزون"
        },
        {
            "chapter": 15,
            "verse": 20,
            "text": "وجعلنا لكم فيها معيش ومن لستم له برزقين"
        },
        {
            "chapter": 15,
            "verse": 21,
            "text": "وان من شيء الا عندنا خزاينه وما ننزله الا بقدر معلوم"
        },
        {
            "chapter": 15,
            "verse": 22,
            "text": "وارسلنا الريح لوقح فانزلنا من السماء ماء فاسقينكموه وما انتم له بخزنين"
        },
        {
            "chapter": 15,
            "verse": 23,
            "text": "وانا لنحن نحي ونميت ونحن الورثون"
        },
        {
            "chapter": 15,
            "verse": 24,
            "text": "ولقد علمنا المستقدمين منكم ولقد علمنا المستخرين"
        },
        {
            "chapter": 15,
            "verse": 25,
            "text": "وان ربك هو يحشرهم انه حكيم عليم"
        },
        {
            "chapter": 15,
            "verse": 26,
            "text": "ولقد خلقنا الانسن من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 27,
            "text": "والجان خلقنه من قبل من نار السموم"
        },
        {
            "chapter": 15,
            "verse": 28,
            "text": "واذ قال ربك للمليكة اني خلق بشر ا من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 29,
            "text": "فاذا سويته ونفخت فيه من روحي فقعوا له سجدين"
        },
        {
            "chapter": 15,
            "verse": 30,
            "text": "فسجد المليكة كلهم اجمعون"
        },
        {
            "chapter": 15,
            "verse": 31,
            "text": "الا ابليس ابى ان يكون مع السجدين"
        },
        {
            "chapter": 15,
            "verse": 32,
            "text": "قال يابليس ما لك الا تكون مع السجدين"
        },
        {
            "chapter": 15,
            "verse": 33,
            "text": "قال لم اكن لاسجد لبشر خلقته من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 34,
            "text": "قال فاخرج منها فانك رجيم"
        },
        {
            "chapter": 15,
            "verse": 35,
            "text": "وان عليك اللعنة الى يوم الدين"
        },
        {
            "chapter": 15,
            "verse": 36,
            "text": "قال رب فانظرني الى يوم يبعثون"
        },
        {
            "chapter": 15,
            "verse": 37,
            "text": "قال فانك من المنظرين"
        },
        {
            "chapter": 15,
            "verse": 38,
            "text": "الى يوم الوقت المعلوم"
        },
        {
            "chapter": 15,
            "verse": 39,
            "text": "قال رب بما اغويتني لازينن لهم في الارض ولاغوينهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 40,
            "text": "الا عبادك منهم المخلصين"
        },
        {
            "chapter": 15,
            "verse": 41,
            "text": "قال هذا صرط علي مستقيم"
        },
        {
            "chapter": 15,
            "verse": 42,
            "text": "ان عبادي ليس لك عليهم سلطن الا من اتبعك من الغاوين"
        },
        {
            "chapter": 15,
            "verse": 43,
            "text": "وان جهنم لموعدهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 44,
            "text": "لها سبعة ابوب لكل باب منهم جزء مقسوم"
        },
        {
            "chapter": 15,
            "verse": 45,
            "text": "ان المتقين في جنت وعيون"
        },
        {
            "chapter": 15,
            "verse": 46,
            "text": "ادخلوها بسلم ءامنين"
        },
        {
            "chapter": 15,
            "verse": 47,
            "text": "ونزعنا ما في صدورهم من غل اخونا على سرر متقبلين"
        },
        {
            "chapter": 15,
            "verse": 48,
            "text": "لا يمسهم فيها نصب وما هم منها بمخرجين"
        },
        {
            "chapter": 15,
            "verse": 49,
            "text": "۞نبي عبادي اني انا الغفور الرحيم"
        },
        {
            "chapter": 15,
            "verse": 50,
            "text": "وان عذابي هو العذاب الاليم"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "ونبيهم عن ضيف ابرهيم"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "اذ دخلوا عليه فقالوا سلم ا قال انا منكم وجلون"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "قالوا لا توجل انا نبشرك بغلم عليم"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "قال ابشرتموني على ان مسني الكبر فبم تبشرون"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "قالوا بشرنك بالحق فلا تكن من القنطين"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "قال ومن يقنط من رحمة ربه الا الضالون"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "قال فما خطبكم ايها المرسلون"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "قالوا انا ارسلنا الى قوم مجرمين"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "الا ءال لوط انا لمنجوهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "الا امراته قدرنا انها لمن الغبرين"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "فلما جاء ءال لوط المرسلون"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قال انكم قوم منكرون"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قالوا بل جينك بما كانوا فيه يمترون"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "واتينك بالحق وانا لصدقون"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فاسر باهلك بقطع من اليل واتبع ادبرهم ولا يلتفت منكم احد وامضوا حيث تومرون"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وقضينا اليه ذلك الامر ان دابر هولاء مقطوع مصبحين"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وجاء اهل المدينة يستبشرون"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قال ان هولاء ضيفي فلا تفضحون"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "واتقوا الله ولا تخزون"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قالوا اولم ننهك عن العلمين"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قال هولاء بناتي ان كنتم فعلين"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لعمرك انهم لفي سكرتهم يعمهون"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فاخذتهم الصيحة مشرقين"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فجعلنا عليها سافلها وامطرنا عليهم حجارة من سجيل"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "ان في ذلك لايت للمتوسمين"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وانها لبسبيل مقيم"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "ان في ذلك لاية للمومنين"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وان كان اصحب الايكة لظلمين"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فانتقمنا منهم وانهما لبامام مبين"
        },
        {
            "chapter": 15,
            "verse": 80,
            "text": "ولقد كذب اصحب الحجر المرسلين"
        },
        {
            "chapter": 15,
            "verse": 81,
            "text": "وءاتينهم ءايتنا فكانوا عنها معرضين"
        },
        {
            "chapter": 15,
            "verse": 82,
            "text": "وكانوا ينحتون من الجبال بيوتا ءامنين"
        },
        {
            "chapter": 15,
            "verse": 83,
            "text": "فاخذتهم الصيحة مصبحين"
        },
        {
            "chapter": 15,
            "verse": 84,
            "text": "فما اغنى عنهم ما كانوا يكسبون"
        },
        {
            "chapter": 15,
            "verse": 85,
            "text": "وما خلقنا السموت والارض وما بينهما الا بالحق وان الساعة لاتية فاصفح الصفح الجميل"
        },
        {
            "chapter": 15,
            "verse": 86,
            "text": "ان ربك هو الخلق العليم"
        },
        {
            "chapter": 15,
            "verse": 87,
            "text": "ولقد ءاتينك سبع ا من المثاني والقرءان العظيم"
        },
        {
            "chapter": 15,
            "verse": 88,
            "text": "لا تمدن عينيك الى ما متعنا به ازوج ا منهم ولا تحزن عليهم واخفض جناحك للمومنين"
        },
        {
            "chapter": 15,
            "verse": 89,
            "text": "وقل اني انا النذير المبين"
        },
        {
            "chapter": 15,
            "verse": 90,
            "text": "كما انزلنا على المقتسمين"
        },
        {
            "chapter": 15,
            "verse": 91,
            "text": "الذين جعلوا القرءان عضين"
        },
        {
            "chapter": 15,
            "verse": 92,
            "text": "فوربك لنسلنهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 93,
            "text": "عما كانوا يعملون"
        },
        {
            "chapter": 15,
            "verse": 94,
            "text": "فاصدع بما تومر واعرض عن المشركين"
        },
        {
            "chapter": 15,
            "verse": 95,
            "text": "انا كفينك المستهزءين"
        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "الذين يجعلون مع الله الها ءاخر فسوف يعلمون"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "ولقد نعلم انك يضيق صدرك بما يقولون"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "فسبح بحمد ربك وكن من السجدين"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "واعبد ربك حتى ياتيك اليقين"
        }
    ]
}