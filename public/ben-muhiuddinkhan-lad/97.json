{
    "chapter": [
        {
            "chapter": 97,
            "verse": 1,
            "text": "Āmi ēkē nāyila karēchi śabē-kadarē."
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Śabē-kadara samandhē āpani ki jānēna"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "śabē-kadara hala ēka hājāra māsa apēkṣā śrēṣṭha."
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Ētē pratyēka kājēra jan'yē phērēśatāgaṇa ō rūha abatīrṇa haẏa tādēra pālanakartāra nirdēśakramē."
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "Ēṭā nirāpattā, yā phajarēra udaẏa paryanta abyāhata thākē."
        }
    ]
}