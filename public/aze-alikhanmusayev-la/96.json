{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaradan Rəbbinin adı ilə oxu"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı qan laxtasından yaratdı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oxu! Sənin Rəbbin muqayisəsiz səxavətə malikdir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "O, qələmlə yazmagı oyrətdi"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmədiklərini oyrətdi"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Xeyr! Insan, dogrudan da, həddini asır –"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "ozunun ehtiyacsız oldugunu zənn etdiyinə gorə"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Axı son donusun Rəbbinədir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordunmu o kəsi ki, mane olur –"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "bir bəndəyə namaz qıldıgı zaman"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Soylə gorək, əgər o bəndə dogru yoldadırsa"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "yaxud Allahdan qorxmagı əmr edirsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Soylə gorək, əgər o kafir haqqı yalan sayıb uz dondəribsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Məgər o bilmir ki, Allah gorur"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Xeyr! Əgər yaramaz əməlinə son qoymasa, Biz onun kəkilindən tutacagıq –"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "yalancı, gunahkar kəkilindən"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Qoy oz yıgnagını cagırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz də əzab mələklərini cagıracagıq"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Xeyr, sən ona qulaq asma! Səcdə qıl və Allaha yaxınlas"
        }
    ]
}