{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Goy yarılacagı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "və Rəbbini dinləyib boyun əyməyə hazır olacagı zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dumduz ediləcəyi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "icindəkiləri kənara atıb bosalacagı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "və Rəbbini dinləyib boyun əyməyə hazır olacagı zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Sən, həqiqətən də, səy gostərib Rəbbinə tərəf can atırsan. Sən Onunla qarsılasacaqsan"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sag əlinə veriləcəksə"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "o, yungul sorgu-suala tutulacaq"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "və sevincək oz ailəsinə qayıdacaqdır"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin kitabı arxa tərəfindən veriləcəksə"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "o ozunə olum diləyəcək"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "və alovlu oda atılacaqdır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Sozsuz ki, o, dunyada ikən oz ailəsində sevinc icində idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "və elə guman edirdi ki, Rəbbinin huzuruna qayıtmayacaqdır"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Xeyr! Sozsuz ki, Rəbbi onu gorurdu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "And icirəm səfəqə"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "gecəyə və onun agusuna aldıqlarına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "bədirlənmis on dord gecəlik aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz mutləq haldan-hala kecib dəyisəcəksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara nə olub ki, iman gətirmirlər"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "və onlara Quran oxunduqda səcdə etmirlər"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Əksinə, kufr edənlər haqqı yalan sayırlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların nəyi gizlətdiklərini cox yaxsı bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Elə isə onları agrılı-acılı bir əzabla mujdələ"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "iman gətirib yaxsı islər gorənlər istisna olmaqla! Onlar ucun tukənməz mukafatlar hazırlanmısdır"
        }
    ]
}