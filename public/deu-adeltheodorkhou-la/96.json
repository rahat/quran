{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Lies im Namen deines Herrn, der erschaffen hat"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Den Menschen erschaffen hat aus einem Embryo"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Lies. Dein Herr ist der Edelmutigste"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Der durch das Schreibrohr gelehrt hat"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Den Menschen gelehrt hat, was er nicht wußte"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Nein, der Mensch zeigt ein Ubermaß an Frevel"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Daß er meint, er ware auf niemanden angewiesen"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Zu deinem Herrn erfolgt die Ruckkehr"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Hast du den gesehen, der da wehrt"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Einem Diener, wenn er betet"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Was meinst du? Ob er da der Rechtleitung folgt"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Oder ob er die Gottesfurcht gebietet"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Was meinst du? Ob er wohl (die Botschaft) fur Luge erklart und sich abkehrt"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Weiß er denn nicht, daß Gott (alles) sieht"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Nein, wenn er nicht aufhort, werden Wir ihn gewiß am Schopf packen und ziehen"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Einem lugnerischen, sundigen Schopf"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Er soll doch da seine Mitstreiter herbeirufen"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Wir werden die Schergen herbeirufen"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Nein, gehorche ihm nicht. Wirf dich vielmehr nieder und suche die Nahe (Gottes)"
        }
    ]
}