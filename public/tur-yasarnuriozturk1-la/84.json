{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarılıp parcalandıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve Rabbini dinleyip de hakkın belirisine arac kılındıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Ve yer uzatıldıgı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Ve icindekini atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip de hakkın belirisine arac kılındıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, sen Rabbine varmak icin cok didinecek, sonunda O´na kavusacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kitabı sagdan verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kitabı arka tarafından verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Bir olum cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve korkunc atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "O, ailesi icinde sevincli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Daha duskun bir konuma asla gecmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır! Rabbi onu iyice gormekteydi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Is, sandıkları gibi degil! Yemin ederim aksamın kızıllıgına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve derledigine"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Toparlandıgı zaman Ay´a"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki siz boyuttan boyuta/halden hale mutlaka gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Peki onlara ne oluyor da iman etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsılarında Kur´an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tam aksine, o kufre sapanlar yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah, iclerinde sakladıklarını cok iyi biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "O halde, onlara acıklı bir azap mustula"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Iman edip hayra ve barısa yonelik isler yapanlar mustesnadır. Onlar icin kesintisiz bir odul vardır"
        }
    ]
}