{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun; birbiri ardınca gonderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydıkca yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ayırdıkca ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ogut bırakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ozur yahut uyarmak icin"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "(Bunlara andolsun) Ki size va'dedilen, mutlaka olacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar(ın ısıgı) silindigi zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar ufalanıp savruldugu zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Elcilere vakit belirlendigi zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Ertelenmis oldukları gun icin"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Yani hukum gunu icin"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hukum gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Oncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra geridekileri de onların ardına takarız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Suclulara boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "(Hakkı) yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi adi bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu saglam bir karar yerine koyduk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Bicimlendirdik. Ne guzel bicim vereniz Biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Arz'ı toplanma yeri yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Diriler ve oluler icin"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yuksek yuksek daglar meydana getirmedik mi? Ve size tatlı su(lar) icirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yalanladıgınız(azab)a gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Uc dallı bir golgeye gidin"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ki ne golgelendirir, ne de alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, kutuk gibi kıvılcım(lar) sacar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "(Sactıgı) kıvılcım, sanki sarı bir halattır"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, konusamayacakları gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Kendilerine izin de verilmez ki ozur dilesinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Iste bu, hukum gunudur. Sizi ve oncekileri bir araya topladık"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eger (kurtulmak icin yapacagınız) bir hileniz varsa bana hile yapın (da beni atlatın)"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Korunanlar ise golgeler altında, cesme basındadırlar"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Gonullerinin cektigi meyvalar icindedirler"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınıza karsılık afiyetle yeyin, icin"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, guzel davrananları boyle mukafatlandırırız"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yeyin, azıcık sefa surun, siz suclularsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara: \"Ruku' edin\" dendigi zaman ruku' etmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Onlar bun(a inanmadık)dan sonra hangi hadise (soze) inanacaklar"
        }
    ]
}