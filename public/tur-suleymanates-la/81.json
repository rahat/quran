{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes buzuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar kararıp dokuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "On aylık gebe develer bası bos bırakıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler ciftlestirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve soruldugu zaman o diri diri topraga gomulen kıza"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunah(ı) yuzunden olduruldu? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amel) defterler(i) acılıp yayıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok sıyrılıp acıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her can, ne yapıp getirdigini bilir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yoo, yemin ederim o geri kalıp gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp gidenlere, donup saklananlara"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Sırtını donen geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Soluk almaga baslayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "(Andolsun bunlara) Ki o, degerli bir elcinin (Cebrail'in) sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(O elci,) Gucludur, Arsın sahibi (Allah) katında yucedir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada (kendisine) ita'at edilen, guvenilendir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız cinli degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun (Muhammed) onu apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında (verdigi haberlerden dolayı) suclanamaz"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O (Kur'an) kovulmus seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemlere oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Aranızdan dogru hareket etmek isteyen icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}