            "chapter": 101,
            "verse": 1,
            "text": "El-Kari´â : Kalblere korku salan o müthiş gürültü"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Kari´â nedir"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Kari´â´nın ne olduğunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar (ateşin çevresinde) dağılıp dökülen pervane gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da atılmış renk renk yüne benzeyecek"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Artık kimin tartıları ağır basarsa"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, memnun olacağı bir hayattadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun yeri Hâviye´dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Hâviye´nin ne olduğunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "iyice kızışmış bir ateştir"
        }
    ]
