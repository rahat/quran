{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "بخوان به نام پروردگارت كه آفريد"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "انسان را از عَلَق آفريد"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "بخوان، و پروردگار تو كريمترين [كريمان‌] است"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "همان كس كه به وسيله قلم آموخت"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "آنچه را كه انسان نمى‌دانست [بتدريج به او] آموخت"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "حقاً كه انسان سركشى مى‌كند،"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "همين كه خود را بى‌نياز پندارد"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "در حقيقت، بازگشت به سوى پروردگار توست"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "آيا ديدى آن كس را كه باز مى‌داشت،"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "بنده‌اى را آنگاه كه نماز مى‌گزارد؟"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "چه پندارى اگر او بر هدايت باشد،"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "يا به پرهيزگارى وادارد [براى او بهتر نيست‌]؟"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "[و باز] آيا چه پندارى [كه‌] اگر او به تكذيب پردازد و روى برگرداند [چه كيفرى در پيش دارد]؟"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "مگر ندانسته كه خدا مى‌بيند؟"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "زنهار، اگر باز نايستد، موى پيشانى [او] را سخت بگيريم؛"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "[همان‌] موى پيشانى دروغزن گناه‌پيشه را"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "[بگو] تا گروه خود را بخواند"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "بزودى آتشبانان را فرا خوانيم"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "زنهار! فرمانش مَبَر، و سجده كن، و خود را [به خدا] نزديك گردان"
        }
    ]
}