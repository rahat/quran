{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve ışığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ve ondan ışık aldığı, ardına düşüp seyrettiği zaman aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Ve ışıdığı zaman güne"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Ve kapladığı zaman geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Ve göğe ve onu kurana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Ve yere ve onu döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Ve cana ve azasını düzüp koşana"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Derken ona kötülüğünü de, çekinmesini de ilham etmiştir"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Andolsun ki kim, özünü iyice temizlemişse kurtulmuştur, muradına ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve andolsun ki kim, özünü kirletmiş, kötülüğe gömmüşse ziyana girmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlığıyle yalanlamıştı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "O zaman ki en bahtsızları atılmıştı da"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Derken Allah'ın Peygamberi, bu demişti onlara, Allah'ın dişi devesi, çekinin ondan ve suvarılmasından"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Derken yalanlamışlardı onu da ayaklarını kesip öldürmüşlerdi deveyi, derken Rableri de suçları yüzünden onları helak etmişti de orasını düzleyivermişti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bu işin sonundan korkmazdı ki"
        }
    ]
}