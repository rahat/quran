{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Слышал ли ты рассказ о покрывающем (т. е. о Дне воскресения)"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "[Одни] лица в тот день удрученные"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "изнуренные [тяготами], измученные"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Они будут гореть в огненном пламени"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Их будут поить [водой] из пышущего [жаром] родника"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "кормить же их будут только колючками"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "от которых не жиреют и которые не утоляют голода"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "[Другие] лица в тот день - благостные"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "довольные [плодами] своих стараний"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "[пребыванием] в вышних садах"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Там не услышат они суетных слов"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "там - текучие ключи"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "там воздвигнуты ложа"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "выставлены чаши"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "разложены подушки"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "разостланы ковры"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Неужели они не поразмыслят о том, как созданы верблюды"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "как вознесено небо"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "как воздвигнуты горы"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "как простерта земля"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Так наставляй же, ведь ты - наставник"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Тебе не положено повелевать ими"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "за исключением тех, кто отвернулся [от веры] и не уверовал [в Коран]"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "А ведь покарает их Аллах величайшей карой"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Ведь к Нам они вернутся"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "и Мы же предъявим им счет"
        }
    ]
}