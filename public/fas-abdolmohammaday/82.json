{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "آنگاه كه آسمان بشكافد،"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "و آنگاه كه ستارگان پراكنده شوند،"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "و آنگاه كه درياها به هم بپيوندند،"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "و آنگاه كه قبرها زير و زبر گردند،"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "هر كس مى‌داند چه چيز پيشاپيش فرستاده و چه چيز بر جاى گذاشته است"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "اى آدمى، چه چيز تو را به پروردگار كريمت مغرور كرده است؟"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "آن كه تو را بيافريد و اعضايت تمام كرد و اعتدالت بخشيد"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "و به هر صورتى كه خواست اعضاى تو را به هم انداخت"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "آگاه باشيد كه شما روز جزا را دروغ مى‌انگاريد"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "حال آنكه بر شما محافظانى گمارده شده‌اند"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كاتبانى بزرگوار،"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "مى‌دانند كه شما چه مى‌كنيد"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "هر آينه نيكوكاران در نعمتند،"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "و گناهكاران در جهنم"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "در روز شمار به جهنم درآيند،"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "و از آن غايب نشوند"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "تو چه مى‌دانى كه روز شمار چيست؟"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "باز هم تو چه مى‌دانى كه روز شمار چيست؟"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "روزى است كه كسى براى كسى ديگر هيچ كارى نتواند كرد و در آن روز فرمان فرمان خدا باشد"
        }
    ]
}