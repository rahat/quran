{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "vāṉattiṉ mītum, (iravil) utayamākakkūṭiyatiṉ mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "(napiyē!) Utayamākakkūṭiyatu eṉṉaveṉṟu nīr aṟivīrā"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(itutāṉ) iravellām cuṭariṭṭup pirakācittuk koṇṭirukkiṉṟa naṭcattiram"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "ovvoru maṉitaṉiṭamum (nam'māl ēṟpaṭuttappaṭṭa) kaṇkāṇikkak kūṭiya oru (vāṉa)var illāmalillai"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "ākavē, maṉitaṉ, tāṉ etaṉāl paṭaikkappaṭṭirukkiṟāṉ eṉpatai kavaṉikkavum"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "kutittu veḷippaṭum oru tuḷit taṇṇīraik koṇṭē paṭaikkappaṭṭāṉ"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "atu, mutukantaṇṭukkum neñcukkum mattiyiliruntu veḷippaṭukiṟatu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "(Ivvāṟu paṭaikkiṉṟa) avaṉ (maṉitaṉ iṟantapiṉ uyir koṭuttu) avaṉai mīḷavaikkavum niccayamāka āṟṟaluṭaiyavaṉṉa"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "eṉṟaiya tiṉam ellā marmaṅkaḷum veḷippaṭṭuviṭumō"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "(aṉṟaiya tiṉam) maṉitaṉukku oru caktiyum irukkātu. Utavi ceypavaṉum irukka māṭṭāṉ"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "maḻai poḻiyum vāṉattiṉ mītu cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(puṟpūṇṭukaḷ muḷaikka) veṭikkum pūmiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "meyyākavē itu (naṉmai tīmaikaḷaip) pirittaṟivikkakkūṭiya collākum"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "itu vīṇ parikācamā(ṉa vārttaiya)lla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "(napiyē!) Niccayamāka avarkaḷ (umakku virōtamāka) oru cūḻcci ceykiṟārkaḷ"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "nāṉum (avarkaḷukku virōtamāka) oru cūḻcci ceyvēṉ"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "ākavē, innirākarippavarkaḷukku (atu varai) nīr avakācamaḷippīrāka. (Atikamalla;) oru coṟpa avakācam avarkaḷukku aḷippīrāka"
        }
    ]
}