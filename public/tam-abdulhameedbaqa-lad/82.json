{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "(ulaka muṭivil) vāṉam veṭittuviṭṭāl"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "naṭcattiraṅkaḷ citaṟiviṭṭāl"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kaṭalkaḷ piḷakkappaṭṭuviṭṭāl"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "camātikaḷum tiṟakkappaṭṭāl (maraṇittavarkaḷ uyir peṟṟeḻuntu)"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "ovvōr ātmāvum tāṉ (ulakattil) muṉṉar ceytavaṟṟaiyum, (ulakattil) tāṉ viṭṭu vantavaṟṟaiyum naṉkaṟintukoḷḷum"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "maṉitaṉē! Mika kaṇṇiyam uḷḷa uṉatu iṟaivaṉaip paṟṟi uṉṉai mayakkiviṭṭatu etu"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "avaṉtāṉ (oṉṟumillātirunta) uṉṉaip paṭaittu mēlāṉa vitattil mika oḻuṅkāka uṉṉai amaittāṉ"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "avaṉ virumpiya (mikka aḻakāṉa) kōlattil uṉ avayaṅkaḷaip poṟuttiṉāṉ"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Eṉiṉum, (maṉitarkaḷē!) Nīṅkaḷ kūli koṭukkum (tīrppu) nāḷaip poyyākkukiṟīrkaḷ"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "niccayamāka uṅkaḷ mītu kāvalāḷarkaḷ ēṟpaṭuttappaṭṭu irukkiṉṟaṉar"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "avarkaḷ (vāṉavarkaḷil uḷḷa) kaṇṇiyamāṉa eḻuttāḷarkaḷ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "nīṅkaḷ ceypavaṟṟaiyellām avarkaḷ (tavaṟātu) aṟintu (eḻutik) koḷvārkaḷ"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "ākavē, niccayamāka nallavarkaḷ, iṉpam niṟainta corkkattil iruppārkaḷ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "niccayamākat tīyavarkaḷ narakattiltāṉ iruppārkaḷ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "kūli koṭukkum nāḷil ataiyē avarkaḷ aṭaivārkaḷ"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "avarkaḷ atiliruntu maṟaintu (tappi ōṭi) viṭa muṭiyātu"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "(napiyē!) Kūli koṭukkum annāḷ eṉṉaveṉṟu nīr aṟivīrā"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "piṟaku, kūli koṭukkum annāḷ eṉṉaveṉṟu umakku evarēṉum aṟivittaṉarā"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "annāḷil ōr ātmā, maṟṟōr ātmāvukku oru payaṉumaḷikka cakti peṟātu. Atikāramum annāḷil allāhvukkē irukkum"
        }
    ]
}