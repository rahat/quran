{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "سوگند یاد نکنم به روز رستاخیز"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "و نه سوگند آرم به نهاد (به روان) سرزنشگر"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "آیا پندارد انسان که هرگز گرد نیاریم استخوانهایش را"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بلی توانائیم بر آنکه راست کنیم سرانگشتانش را"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بلکه خواهد انسان که باز کند پیش رویش را"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "پرسد کی است روز قیامت‌"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "تا گاهی که بدرخشد دیده‌"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "و بگیرد ماه‌"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "و گردآورده شوند مهر و ماه‌"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "گوید انسان در آن روز کجا است گریزگاه‌"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "نه چنین است نیست گریزگاه‌"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "بسوی پروردگار تو است در آنروز آرامشگاه‌"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "آگاه شود انسان در آن روز بدانچه پیش فرستاد و پس انداخت‌"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بلکه انسان است بر جان خویشتن بینا"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "و هر چند بیفکند بهانه‌های خویش را"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "نجنبان بدان زبانت را تا بشتابی بدان‌"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "که همانا بر ما است گردآوردنش و خواندنش‌"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "تا گاهی که خوانیمش پس پیروی کن از خواندنش‌"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "سپس همانا بر ما است بیانش‌"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "نه چنین است بلکه دوست دارید شتابان را"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "و رها کنید پایان را"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "چهره‌هائی است در آن روز خرم‌"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "بسوی پروردگار خویش نگران‌"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "و چهره‌هائی است در آن روز دژم‌"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "پندارند که کرده نشود با ایشان کاری کمرشکن‌"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "نه چنین است بلکه گاهی که برسد گلوگاه‌ها را"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "و گفته شود کیست درمان‌بخش (فسونگر)"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "پندارد که آن است جدائی‌"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "و بپیچد ساق به ساق‌"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "بسوی پروردگار تو است در آن روز شدنگاه‌"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "پس نه تصدیق کرد و نه نماز گزارد"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "و لیکن تکذیب کرد و روی برتافت‌"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "پس روان شد بسوی خاندان خویش خرامان (خمیازه‌کشان)"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "تو را سزد پس تو را سزد"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "سپس تو را سزد پس تو را سزد"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "آیا پندارد انسان که گذارده شود رها"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "آیا نبود چکّه‌ای از منی که ریخته شود"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "پس گردید خونی بسته پس بیافرید پس بیاراست‌"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "پس گردانید از او دو جفت را نر و ماده‌"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "آیا نیست آن توانا بر آنکه زنده سازد مرده‌گان را"
        }
    ]
}