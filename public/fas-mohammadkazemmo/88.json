{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "آیا بیامدت داستان فراگیرنده‌"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "رویهائی است در آن روز سرافکنده‌"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "کارکننده‌اند رنجبرنده‌"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "چشند آتشی سوزان‌"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "نوشانیده شوند از چشمه جوشان‌"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "نیستشان خوراکی جز از خار"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "نه فربه سازد و نه بی‌نیاز کند از گرسنگی‌"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "رویهائی است در آن روز شاداب‌"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از کوشش خویشند خوشنود"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشتی فرازنده‌"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "نشنوند در آن یاوه‌ای‌"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آن است چشمه روان‌"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آن است تختهائی افراشته‌"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و جامهائی نهاده‌"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهائی چیده (صف آورده)"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و پرده‌های گسترده‌"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آیا ننگرند بسوی اشتر چگونه آفریده شد"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و بسوی آسمان چگونه افراشته شد"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و بسوی کوه‌ها چگونه نشانده شد"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و بسوی زمین چگونه گسترده شد"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس یادآوری کن جز این نیست توئی یادآورنده‌"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "نیستی بر ایشان فرمانده‌"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر آنکه روی برتافت و کفر ورزید"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "که عذاب کندش خدا آن عذاب بزرگتر"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "همانا بسوی ماست بازگشتشان‌"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس همانا بر ماست حسابشان‌"
        }
    ]
}