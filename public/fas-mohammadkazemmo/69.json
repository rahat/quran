{
    "chapter": [
        {
            "chapter": 69,
            "verse": 1,
            "text": "آن فرودآینده‌"
        },
        {
            "chapter": 69,
            "verse": 2,
            "text": "چیست آن فرودآینده‌"
        },
        {
            "chapter": 69,
            "verse": 3,
            "text": "و ندانستت چیست فرودآینده‌"
        },
        {
            "chapter": 69,
            "verse": 4,
            "text": "تکذیب کردند ثمود و عاد به کوبنده‌"
        },
        {
            "chapter": 69,
            "verse": 5,
            "text": "اما ثمود پس نابود شدند به سرکشنده‌"
        },
        {
            "chapter": 69,
            "verse": 6,
            "text": "و اما عاد پس نابود شدند به بادی تندوزنده سرکش‌"
        },
        {
            "chapter": 69,
            "verse": 7,
            "text": "بگماردش بر ایشان هفت شب و هشت روز داشت روز پی‌درپی که بینی گروه را در آن بیهوش افتاده گوئیا آنانند تنه‌های نخل فروافتاده‌"
        },
        {
            "chapter": 69,
            "verse": 8,
            "text": "پس آیا می‌نگری برای ایشان بازماندگانی‌"
        },
        {
            "chapter": 69,
            "verse": 9,
            "text": "و آمد فرعون و آنان که پیش از او بودند و باژگون‌شدگان به گناه‌"
        },
        {
            "chapter": 69,
            "verse": 10,
            "text": "پس سرپیچیدند فرستاده پروردگار خویش را پس بگرفتشان گرفتنی سخت‌"
        },
        {
            "chapter": 69,
            "verse": 11,
            "text": "همانا گاهی که فزونی گرفت آب سوارتان کردیم در رونده‌"
        },
        {
            "chapter": 69,
            "verse": 12,
            "text": "تا بگردانیمش برای شما یادآوریی و بشنوندش گوشهائی شنونده‌"
        },
        {
            "chapter": 69,
            "verse": 13,
            "text": "تا گاهی که دمیده شود در صور یک دمیدن‌"
        },
        {
            "chapter": 69,
            "verse": 14,
            "text": "و برداشته شوند زمین و کوه‌ها پس کوبیده شوند یک کوبیدن‌"
        },
        {
            "chapter": 69,
            "verse": 15,
            "text": "در آن روز فرود آید فرودآینده‌"
        },
        {
            "chapter": 69,
            "verse": 16,
            "text": "و شکافت آسمان پس آن است در آن روز سست‌"
        },
        {
            "chapter": 69,
            "verse": 17,
            "text": "و فرشته بر اطراف آن است و بردارد عرش پروردگارت را بر فراز ایشان در آن روز هشت تن‌"
        },
        {
            "chapter": 69,
            "verse": 18,
            "text": "در آن روز عرضه شوید نهان نماند از شما نهان‌شونده‌"
        },
        {
            "chapter": 69,
            "verse": 19,
            "text": "اما آنکه داده شد کتابش را به راستش گوید اینک بیائید بخوانید نامه مرا"
        },
        {
            "chapter": 69,
            "verse": 20,
            "text": "من می‌پنداشتم که رسنده‌ام به حساب خویش‌"
        },
        {
            "chapter": 69,
            "verse": 21,
            "text": "پس او است در زندگانی خوشنود (پسندیده)"
        },
        {
            "chapter": 69,
            "verse": 22,
            "text": "در بهشتی بلند (افراشته)"
        },
        {
            "chapter": 69,
            "verse": 23,
            "text": "که چیده‌های آن است فرود و نزدیک‌"
        },
        {
            "chapter": 69,
            "verse": 24,
            "text": "بخورید و بنوشید گوارا باد شما را بدانچه گذشت از شما در روزگاران گذشته‌"
        },
        {
            "chapter": 69,
            "verse": 25,
            "text": "و اما آنکه داده شد نامه خویش را به چپش گوید کاشکیم داده نمی‌شدم نامه خویش را"
        },
        {
            "chapter": 69,
            "verse": 26,
            "text": "و نمی‌دانستم چیست حساب من‌"
        },
        {
            "chapter": 69,
            "verse": 27,
            "text": "کاش می‌بود آن گذرنده‌"
        },
        {
            "chapter": 69,
            "verse": 28,
            "text": "سودی نداد (بی‌نیاز نگردانید) مرا دارائیم‌"
        },
        {
            "chapter": 69,
            "verse": 29,
            "text": "برفت از من فرمانروائیم‌"
        },
        {
            "chapter": 69,
            "verse": 30,
            "text": "بگیریدش پس به زنجیرش کشید"
        },
        {
            "chapter": 69,
            "verse": 31,
            "text": "سپس به دوزخش درآرید"
        },
        {
            "chapter": 69,
            "verse": 32,
            "text": "پس در زنجیری که درازیش هفتاد ذراع است او را بکشید"
        },
        {
            "chapter": 69,
            "verse": 33,
            "text": "که بود او ایمان نمی‌آورد به خدای بزرگ‌"
        },
        {
            "chapter": 69,
            "verse": 34,
            "text": "و ترغیب نمی‌کرد به خوراندن بینوا"
        },
        {
            "chapter": 69,
            "verse": 35,
            "text": "پس نیستش امروز در اینجا دوستی‌"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "و نه خوراکی جز از چرک دوزخیان‌"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "نخورندش جز گنهکاران‌"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس سوگند یاد نمی‌کنم بدانچه بینید"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و آنچه نبینید"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "که آن است همانا سخن پیمبری گرامی‌"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و نیست گفتار شاعری به کمی ایمان آورید"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و نه گفتار پیش‌گوئی به کمی یاد آورید"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "فرستادنی است از پروردگار عالمیان‌"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر می‌بست بر ما پاره سخنان را"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "هر آینه می‌گرفتیم از او به دست راست‌"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "و سپس می‌بریدیم از او رگ گردن را"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "و نبودش کسی از شما نگهدارنده‌"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "و همانا آن است یادآوریی برای پرهیزکاران‌"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و همانا دانیم که از شما است تکذیب‌کنندگان‌"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و همانا آن است دریغی بر کافران‌"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و همانا آن است در حقّ یقین‌"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس تسبیح گوی به نام پروردگارت آن بزرگ‌"
        }
    ]
}