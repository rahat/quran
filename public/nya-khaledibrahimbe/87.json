{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "“Lemekeza dzina la Mbuye wako Wapamwambamwamba (ndikuliyeretsa ku zinthu zosayenera)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "“Amene adalenga (chilichonse) ndikuchikonza bwinobwino (mkalengedwe kolingana)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "“Amene adalamuliratu (chilichonse zochita zake) ndi kuchiongolera"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "“Ndi Yemwenso akumeretsa msipu"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "“Ndipo nausandutsa kukhala wouma ndi wodera"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "“Tikulakatulira (chivumbulutso Chathu) ndipo siuyiwala"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "“Kupatula chimene wafuna Allah (kuti uchiiwale); ndithu Iye amadziwa zoonekera ndi zimene zimabisika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "“Ndipo tikufewetsera (njira yochitira zinthu) zabwino"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "“Choncho akumbutse (wanthu powalalikira) ngati kukumbutsa kuthandiza"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "“(Palibe chikaiko ulalikiwo) aukumbukira (ndikuthandizidwa nawo) amene akuopa Allah"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "“Ndipo wamavuto ambiri, (wamakani ndi wokanira), adzitalikitsa ndi ulalikiwo"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "“Amene adzalowa ku moto waukulu (umene wakonzedwa kuti udzakhale malipiro ake)"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "“Ndipo sakafa m’menemo (ndikupumula kumazunzo), ndiponso sakakhala ndi moyo (wamtendere)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "“Ndithu wapambana amene wadziyeretsa (ku machimo)"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "“Ndikukumbukira dzina la Mbuye wake (ndi mtima wake, ndi lirime lake) uku akumapemphera"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "“Koma inu mukukonda kwambiri moyo wa dziko lapansi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "“Pamene moyo wa tsiku lachimaliziro ndiwabwino kwambiri ndiponso wamuyaya"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "“Ndithu izi (mukuuzidwa m’Qur’an) zilipo m’mabuku oyamba, akale"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "“Mabuku a Ibrahim ndi Mûsa"
        }
    ]
}