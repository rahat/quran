{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, sarsıldıkça sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yer, bütün ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsan; buna ne oluyor? dediği zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün; o, bütün haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbın kendisine vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, yaptıklarının kendilerine gösterilmesi için bölük bölük dönerler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim, zerre mikdarı hayır işlerse; onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre mikdarı şer işlerse; onu görür"
        }
    ]
}