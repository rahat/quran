{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun vukuunu hiç bir yalanlayıcı yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer; sarsıldıkça sarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar, ufalandıkça ufalandığı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dağılmış toz haline geldiği zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Siz üç sınıf olmuşsunuzdur"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağcılar; o sağcılar ne mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solcular; o solcular ne bahtsızdırlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Önde olanlar da öncüdürler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte onlar en çok gözde olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Murassa tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı olarak üzerinde yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Ölümsüz civanlar etraflarında dolaşırlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Main´den büyük kaplarla, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan baş ağrısına uğratılmayacakları gibi, akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğenecekleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Kuş eti, içlerinin çektiğinden"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Şahin gözlü huriler de"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inci misali"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmakta olduklarına karşılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş bir laf, ne de günaha sokacak birşey işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnız selama karşılık; selam, denir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağcılar; ne bahtiyardır o sağcılar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz kiraz"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmış muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmış gölge"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan su"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir çok meyve"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yükseltilmiş döşekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gerçekten Biz; onları, yeni bir yaratılışla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Ve onları el değmemişler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün hep bir yaşıtlar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağcılar için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir çoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solcular da. Solcular kimlerdir"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Kızgın ateşte, kaynar sulardadırlar"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Ve kapkara dumandan bir gölge içindedirler"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serindir, ne de hoştur"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar; bundan önce refahla şımarmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Ve büyük günah işlemekte direnip dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve derlerdi ki: Öldüğümüzde, toprak ve kemik yığını olduğumuzda mı, gerçekten biz mi yeniden diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önce gelmiş geçmiş atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Şüphesiz hem öncekiler, hem sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün belli bir vaktinde mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra gerçekten siz ey sapıklar, yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Muhakkak ki yiyeceksiniz zakkum ağacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne de içeceksiniz o kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin suya saldırışı gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza günü onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi; Biz, yarattık. Hala tasdik etmez misiniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Söyleyin öyleyse; dökmekte olduğunuz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz, yoksa yaratanlar Biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Biz, takdir ettik aranızda ölümü. Ve Biz, önüne geçilecekler de değiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Yerinize benzerlerinizi getirmekte ve sizi bilemeyeceğiniz bir yaratılışla tekrar var etmekte"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun ki; ilk yaratılışınızı bildiniz. İyice düşünmeli değil misiniz"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Şimdi Bana; ekmekte olduğunuzu haber verin"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu, siz mi bitiriyorsunuz, yoksa Biz miyiz, bitirenler"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek Biz, onu çörçöp yaparız da şaşar kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Doğrusu borç altına girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha doğrusu biz mahrumlarız"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Söyleyin Bana şimdi, içmekte olduğunuz suyu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz, yoksa Biz miyiz indirenler"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "İsteseydik onu tuzlu bir su kılardık. Öyleyse şükretmeli değil misiniz"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Söyleyin bana, şimdi çakmakta olduğunuz ateşi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız, yoksa Biz miyiz yaratanlar"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz, onu bir ibret ve konaklayanlar için faydalı kıldık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse Rabbını o büyük adıyla tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Hayır yıldızların yerleri üzerine yemin ederim"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Gerçekten bilseniz bu, büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Şüphesiz o; şerefli bir Kur´an´dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Korunmuş bir kitabdadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona arınmış olanlardan başkası dokunamaz"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbından indirilmedir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Siz, bu sözü mü küçümsüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Rızkınızı yalanlamakla mı çıkarıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele can boğaza gelince"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit görürsünüz siz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona sizden daha yakınız, ama görmezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu geri çevirsenize. Şayet sadıklar iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer o kişi gözdelerden ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Rahatlık, güzel rızık ve Naim cenneti"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Şayet sağcılardan ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Selem sana sağcılardan"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer sapık yalanlayıcılardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "İşte ona da kaynar sudan bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılış"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Şüphesiz ki bu; kesin gerçeğin kendisidir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse Rabbını büyük adıyla tesbih et"
        }
    ]
}