        {
            "chapter": 102,
            "verse": 1,
            "text": "Çokluk ile böbürlenmeniz, sizi öylesine oyaladı ki"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Mezarlıkları bile ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır; ilerde bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır; ilerde bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır; eğer kesin bir bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Andolsun ki; cehennemi muhakkak göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Andolsun ki; yine onu gözünüzle kesin olarak göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gün, andolsun ki; nimetlerden sorulacaksınız"
