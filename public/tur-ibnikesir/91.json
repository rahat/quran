{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve aydınlığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu açığa çıkardığında gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Örtüp bürüdüğünde geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu düzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona, hem kötülüğü hem de takvayı ilham edene"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu arıtan, gerçekten felaha ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve onu örtüp kirleten ise muhakkak ziyana uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlığı yüzünden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri tıldığında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın peygamberi onlara: Allah´ın devesi ve onun su hakkı, demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onu yalanladılar ve derken deveyi kestiler. Bunu üzerine günahları sebebiyle Rabbları onları kırıp geçirerek yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bunun sonundan hiç korkmayarak"
        }
    ]
}