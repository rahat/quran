{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "(ulaka mutivil) vanam vetittuvittal"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "natcattirankal citarivittal"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "katalkal pilakkappattuvittal"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "camatikalum tirakkappattal (maranittavarkal uyir perreluntu)"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "ovvor atmavum tan (ulakattil) munnar ceytavarraiyum, (ulakattil) tan vittu vantavarraiyum nankarintukollum"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "manitane! Mika kanniyam ulla unatu iraivanaip parri unnai mayakkivittatu etu"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "avantan (onrumillatirunta) unnaip pataittu melana vitattil mika olunkaka unnai amaittan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "avan virumpiya (mikka alakana) kolattil un avayankalaip poruttinan"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Eninum, (manitarkale!) Ninkal kuli kotukkum (tirppu) nalaip poyyakkukirirkal"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "niccayamaka unkal mitu kavalalarkal erpatuttappattu irukkinranar"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "avarkal (vanavarkalil ulla) kanniyamana eluttalarkal"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "ninkal ceypavarraiyellam avarkal (tavaratu) arintu (elutik) kolvarkal"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "akave, niccayamaka nallavarkal, inpam nirainta corkkattil irupparkal"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "niccayamakat tiyavarkal narakattiltan irupparkal"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "kuli kotukkum nalil ataiye avarkal ataivarkal"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "avarkal atiliruntu maraintu (tappi oti) vita mutiyatu"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "(napiye!) Kuli kotukkum annal ennavenru nir arivira"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "piraku, kuli kotukkum annal ennavenru umakku evarenum arivittanara"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "annalil or atma, marror atmavukku oru payanumalikka cakti peratu. Atikaramum annalil allahvukke irukkum"
        }
    ]
}