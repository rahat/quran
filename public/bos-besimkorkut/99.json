{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Kada se Zemlja najžešćim potresom svojim potrese"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "i kada Zemlja izbaci terete svoje"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "i čovjek uzvikne: \"Šta joj je?!\" –"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "toga Dana će ona vijesti svoje kazivati"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "jer će joj Gospodar tvoj narediti"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "Tog Dana će se ljudi odvojeno pojaviti da im se pokažu djela njihova"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "onaj ko bude uradio koliko trun dobra – vidjeće ga"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "a onaj ko bude uradio koliko trun zla – vidjeće ga"
        }
    ]
}