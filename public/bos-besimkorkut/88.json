{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Da li je doprla do tebe vijest o teškoj nevolji? –"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "kada će se neka lica potištena"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "premorena, napaćena"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "u vatri užarenoj pržiti"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "sa vrela uzavrelog piti"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "kada drugog jela osim trnja neće imati"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "koje neće ni ugojiti ni glad utoliti"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Neka lica toga dana biće radosna"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "trudom svojim zadovoljna –"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "u Džennetu izvanrednome"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "u kome prazne besjede neće slušati"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "U njemu su izvor-vode koje teku"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "u njemu su i divani skupocjeni"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "i pehari postavljeni"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "i jastuci poredani"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "i ćilimi rašireni"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Pa zašto oni ne pogledaju kamile – kako su stvorene"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "i nebo – kako je uzdignuto"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "i planine – kako su postavljene"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "i Zemlju – kako je prostrta"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ti poučavaj – tvoje je da poučavaš"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ti vlast nad njima nemaš"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "A onoga koji glavu okreće i neće da vjeruje"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "njega će Allah najvećom mukom mučiti"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Nama će se oni, zaista, vratiti"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "i pred Nama će, doista, račun polagati"
        }
    ]
}