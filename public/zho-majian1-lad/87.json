{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Nǐ dāng zànsòng nǐ zhìzūn zhǔ de dàmíng chāojué wànwù,"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "tā chuàngzào wànwù, bìng shǐ gè wù yúnchèn."
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Tā yùdìng wànwù, ér jiāyǐ yǐndǎo."
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Tā shēngchū mùcǎo,"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ránhòu shǐ tā biànchéng hēisè de kūcǎo."
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Wǒ jiāng shǐ nǐ sòngdú, gù nǐ bù huì wàngjì,"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "chúfēi zhēnzhǔ suǒ yù nǐ wàngjì de. Tā díquè zhīdào xiǎnzhù de hé yǐn wēi de yánxíng."
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Wǒ jiāng shǐ nǐ zūnxún píngyì de dàolù,"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "gù nǐ dāng jiàohuì zhòngrén, rúguǒ jiàohuì yǒu bì yú tāmen dehuà."
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Wèi zhǔ de rén, jiāng juéwù;"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "bómìng de rén, jiāng tuìbì,"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "tā jiàng rù yú dàhuǒ,"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ránhòu, zài huǒ lǐ bùsǐ yě bù huó."
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Yǒu jiàoyǎng de rén què yǐ chénggōng,"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "tā jìniàn tā de zhǔ de zūn míng, ér jǐn shǒu bài gōng."
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Bùrán, nǐmen què xuǎnzé jīnshì de shēnghuó;"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "qíshí, hòushì shì gèng hǎo de, shì gèng jiǔzhǎng de."
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Zhè què shì zài zài gǔ jīngdiǎn zhōng de,"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "zài zài yì bo lā xīn hé mù sà de jīngdiǎn zhōng de."
        }
    ]
}