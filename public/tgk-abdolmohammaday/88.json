{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Оё достони ғошия ба ту расидааст"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Дар он рӯз ваҳшат дар чеҳраҳо падидор аст"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "талошкардаву ранҷдида"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "дар оташи сӯзон дарафтанд"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "аз он чашмаи бисёр гарм обашон диҳанд"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "таъоме ғайри хор надоранд"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "ки на фарбеҳ мекунад ва на дафъи гуруснагӣ"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Ва дар он рӯз чеҳраҳое тоза бошанд"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "аз кори худ хушнуд"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "дар биҳиште олимақом"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "ки дар он сухани беҳуда нашнавӣ"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "ва дар он чашмасорҳо равон бошад"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "ва тахтҳое баланд зада"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "ва кӯзаҳое ниҳода"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "ва болишҳое дар канори ҳам чида"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "ва фаршҳое паҳн карда"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Оё ба шутур наменигаранд, ки чӣ гуна офарида шуда"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ва ба осмон, ки чӣ гуна бардошташуда"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ва ба кӯҳҳо, ки чӣ гуна баланд кашидашуда"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ва ба замин, ки чӣ сон густурда шуда"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Пас панд деҳ ки ту панддиҳандае ҳастӣ"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Ту бар онон фармонраво нестӣ"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Магар он кас кӣ рӯйгардон шуд ва кофир шуд"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Пас Худояш ба азоби бузургтар азоб мекунад"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Албатта бозгашташон ба сӯи Мост"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Сипас ҳисобашон бо Мост"
        }
    ]
}