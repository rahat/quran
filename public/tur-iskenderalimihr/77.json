{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Ardarda (marufla, irfanla) gönderilenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Ve de şiddetle estikçe esenlere (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Dağıtıp yayanlara andolsun"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ve de ayırdıkça ayıranlara (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ve de zikri ilka edenlere (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(Bu yeminler), özür olarak (mazeret olmaması) veya nezir olarak (uyarması) içindir"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Muhakkak ki vaadolunduğunuz şey, mutlaka vuku bulacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Öyle ki, o zaman yıldızların ışığı giderilmiştir"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Ve o zaman gök yarılmıştır"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Ve o zaman dağlar dağılmıştır"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Ve o zaman resûllere vakit bildirilmiştir"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "(Bunlar) hangi gün için tecil edildi (ertelendi)"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Fasıl (ayırma) günü için (tecil edildi)"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "O fasıl gününün ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "İzin günü, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Evvelkileri Biz helâk etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra diğerlerini (arkadan gelenleri) deonlara tâbî kılarız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Mücrimlere işte böyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi Biz, değersiz bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonra onu sağlam bir yerde kararlı kıldık (yerleştirdik)"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "İşte Biz, böyle takdir ettik. Bunu takdir edenler ne güzel (kudret sahibi)"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz arzı toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Canlılara ve ölülere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve orada yüksek sabit dağlar kıldık. Ve sizi tatlı su ile suladık (içecek su verdik)"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "O yalanlamış olduğunuz şeye gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Üç çatallı olan gölgeye gidiniz"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Gölgelendirmez ve yakıcı aleve bir faydası olmaz"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Muhakkak ki o, saray gibi (büyük) kıvılcımlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o (kıvılcımlar), sarı erkek develer gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, (yalanlayanların) konuşamayacakları bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ve onlara izin verilmez ki, özür beyan etsinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu ayrılma günüdür. Sizi ve evvelkileri biraraya topladık"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Haydi eğer sizin bir tuzağınız varsa hemen Bana karşı tuzak kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Muhakkak ki takva sahipleri gölgelerde ve pınarbaşlarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının çektiği (iştah duydukları) meyveler vardır"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınız sebebiyle afiyetle yeyin ve için"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Muhakkak ki Biz, muhsinleri işte böyle mükâfatlandırırız"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yeyin ve biraz da metalanın (faydalanın). Çünkü siz mücrimlersiniz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Ve onlara: “Rükû edin!” denildiği zaman rükû etmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "İzin günü yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Bundan başka artık hangi söze inanacaklar"
        }
    ]
}