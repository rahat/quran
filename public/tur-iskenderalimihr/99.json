{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Arz, o şiddetli sarsıntısı ile sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve arz, ağırlıklarını dışarı çıkardığı (zaman)"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: “Ona ne oluyor?” dediği (zaman)"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün (izin günü), (arz) haberlerini anlatacak"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Rabbinin ona vahyetmesi ile"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "İzin günü insanlar, amellerinin kendilerine gösterilmesi için dağınık olarak ortaya çıkacak"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre kadar hayır işlerse onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim zerre kadar şerr işlerse onu görür"
        }
    ]
}