{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dîni yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Oysa yetimi itip kakan işte odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ve miskini (yoksulu, çalışmaya gücü olmayanı) doyurmaya teşvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "İşte o namaz kılanlara yazıklar olsun"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar ki, namazlarından gâfil olanlardır"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar riya yapanlardır (gösteriş için yapanlardır)"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve mâûna (zekâta ve yardımlaşmaya) mani olurlar"
        }
    ]
}