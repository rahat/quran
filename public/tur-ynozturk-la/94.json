{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Acıp genisletmedik mi senin gogsunu"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Indirmedik mi uzerinden agır yukunu"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o, belini catırdatmıstı senin"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve yuceltmedik mi senin sanını"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, zorlugun yanında bir kolaylık mutlaka var"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Zorlugun yanında bir kolaylık muhakkak var"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde,bir is ve olustan bosalır bosalmaz yeni bir ise koyulup yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnız Rabbine yonelip dogrul"
        }
    ]
}