{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Dang taiyang an chu de shihou,"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "dang xingsu lingluo de shihou,"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dang shanluan bengkui de shihou,"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "dang yun tuo bei paoqi de shihou,"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "dang yeshou bei jihe de shihou,"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dang haiyang pengpai de shihou,"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "dang linghun bei peihe de shihou,"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "dang bei huomai de nuhai bei xunwen de shihou:"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Ta weisheme zuiguo er zao shahai ne?"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Dang gongguo bu bei zhankai de shihou,"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "dangtian pi bei jie qu de shihou,"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "dang huo yu bei ranzhe de shihou,"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Dang leyuan bei song jin de shihou,"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "mei geren dou zhidao ta suozuoguo de shan e."
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Wo shi yi yunxing de zhong xing"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "moluo de xingxing,"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "he shiqu shi de heiye,"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "zhaoyao shi de zaochen,"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "zhe que shi yige zungui de shizhe de yanci,"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "ta zai baozuo de zhu nali, shi you quanli de, shi you diwei de,"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "shi zhongwangsuogui, erqie zhongyu zhishou de."
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Nimen de pengyou, bushi yige feng ren,"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "ta que yi kanjian nage tianshi zai mingxian de tianbian,"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "ta dui youxuan bushi lin jiao de."
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Zhe bushi bei fangzhu de emo de yanci,"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "ranze, nimen jiang wang nali qu ne?"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Zhe zhishi dui yu quan shijie de jiaohui"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "dui yu nimen zhong yu xunguidaoju zhe de jiaohui,"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "nimen bu yu xunguidaoju, chufei zhenzhu--quan shijie de zhu--yiyu de shihou."
        }
    ]
}