{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ni dang zansong ni zhizun zhu de daming chaojue wanwu,"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "ta chuangzao wanwu, bing shi ge wu yunchen."
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ta yuding wanwu, er jiayi yindao."
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ta shengchu mucao,"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ranhou shi ta bian cheng heise de kucao."
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Wo jiang shi ni songdu, gu ni bu hui wangji,"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "chufei zhenzhu suo yu ni wangji de. Ta dique zhidao xianzhu de he yin wei de yanxing."
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Wo jiang shi ni zunxun pingyi de daolu,"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "gu ni dang jiaohui zhongren, ruguo jiaohui you bi yu tamen dehua."
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Wei zhu de ren, jiang juewu;"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "boming de ren, jiang tuibi,"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "ta jiang ru yu dahuo,"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ranhou, zai huo li busi ye bu huo."
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "You jiaoyang de ren que yi chenggong,"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ta jinian ta de zhu de zun ming, er jin shou bai gong."
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Buran, nimen que xuanze jinshi de shenghuo;"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "qishi, houshi shi geng hao de, shi geng jiu zhang de."
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Zhe que shi zai zai gu jingdian zhong de,"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "zai zai yi bo la xin he mu sa de jingdian zhong de."
        }
    ]
}