{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Andolsun kıyamet gününe"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Andolsun kendini kınayan nefse"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "İnsan, kemiklerini bir araya getiremeyeceğimizi mi sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, onun parmak uçlarını bile düzenlemeye gücümüz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Oysa, insan önündekini yalanlamak ister de"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Kıyamet günü ne zaman? diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Göz kamaştığı zaman"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ay tutulduğu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Güneş ve Ay bir araya getirildiği zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "(O gün) insan: -Bugün kaçacak yer nerede? der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, asla kaçacak bir yer yoktur"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gün, karar yeri Rabbinin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gün insana yaptıkları ve erteledikleri haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Evet, insan kendini görecektir"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "İsterse özür beyan etsin"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Dilini acele ile hareket ettirip durma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Şüphesiz, onu toplayıp, okumak bize düşer"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Onu okuduğumuz zaman onun okunuşuna tabi ol"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra onu açıklamak yine bize aittir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, siz, acil olanı /dünyayı seviyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ahireti bırakıyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gün, parıldayan yüzler olacak"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabbine bakacak"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "O gün asık yüzler de olacak"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Bellerini bükecek bir felakete uğrayacağını anlayacak"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Hayır, can çıkma noktasına/köprücük kemiğine gelmiş"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Son nefesini veren kimdir? denmiş"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Anlar ki, bu bir ayrılış"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacaklarından can çekilmiş"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gün sevk, Rabbine´dir"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemiş, namaz kılmamış"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat, yalanlamış, yüz çevirmiş"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da çalım satarak ailesine gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Belanı buldun, belanı"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra sen buna layıksın"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan kendisini başı boş bırakacağımızı mı sanar"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, atılan spermden bir damla değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra “alaka” olmuş, Allah, onu yaratmış ve düzenlemişti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan erkek ve dişi iki çift yapmıştır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}