{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "(Ndinopika) nezuva nekubwinya kwaro"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Nemwedzi paunoritevera (zuva)"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "(Ndinopika) nemasikati paanoratidza (kubwinya kwezuva)"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Neusiku paunorivhara (zuva)"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Nedenga neavo vakarivaka"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "(Ndinopika) nepasi neavo vakari tambanudza"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nemoyo (munhu) neavo vakamugadzira mune zvakanaka"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Uye vakamuratidza zvakaipa kwaari nezvakanaka kwaari"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Zvirokwazvo, anobudirira uyo anozvichenesa (anotevedzera Islaam)"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Uye zvirokwazvo anokundikana uyo anozvikanganisira pachake (anoramba Islaam)"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "(Vanhu) veThamud vakaramba kuburikidza nekudarikidza kwavo mitemo (vairamba chitendero chechokwadi, Islaam, uye vachiita mabasa akaipa)"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Apo muipi wavo akaenda mberi (kuti auraye ngamera)"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Asi mutumwa waAllah (Swaalih (AS)) akati kwavari: “Iyi ingamera yaAllah (musaikuvadze), uye (musairambidze) kunwa kwayo!”"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Naizvozvo vakamuramba uye vakaiuraya. Naizvozvo Tenzi vavo vakavaparadza nekuda kwechitadzo chavo, uye vakavaenzanisa mukuparadzwa (vanhu vose, vapfumi, nevarombo, vane simba nevasina simba)"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Uye ivo (Allah) havana kutya zvichaitika mumashure mazvo"
        }
    ]
}