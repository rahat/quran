{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Din(ahiret cezasın)ı yalanlayan(adam)ı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte o, öksüzü iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmağa önayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Şu namaz kılanların vay haline"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ki, onlar namazlarından gaflet ederler (kıldıkları namazın değerini bilmez, ona önem vermezler)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gösteriş (için ibadet) yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En ufak bir yardımı esirgerler"
        }
    ]
}