{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Igihe amajuru azo satagurika"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "N’inyenyeri igihe zizo hunguruka"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "N’ibiyaga igihe bizo saturwa"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "N’intatemwa z’abantu igihe zizo zurwa"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Umutima\tw’umuntu\tuzomenya\tico\twatanguje\tkugira\thamwe\tn’ico wasigaje inyuma"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Wewe muntu! ni igiki kiguhenda n’Umuremyi wawe mutagatifu"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Uwakuremye nuku kugira neza, hanyuma nuku kuringaniza neza"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Mw’ishusho iryariryo ryose yishakiye niko yakuringanije"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "None si uko, ahubwo mwebwe nimwe muhakana uwo musi w’impembo"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Mu vy’ukuri hejuru yanyu hari abantu babashigikiye"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Bafise iteka kandi bandika"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Bafise ubumenyi bwivyo mugira vyose"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Mu vy’ukuri abagira ineza bose bazoba bari mumahirwe"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "N’abagizi b’inabi bose bazoba bari mu muriro udahera"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Bazo kwinjira muriwo k’umusi w’impembo"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Kandi ntibazowuva mwo"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "N’igiki kizo kumenyesha uwo musi w’impembo yuko uzoba ari umusi wa ryari"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Kandi n’igiki kizo kumenyesha uwo musi w’impembo y’uko uzoba ari umusi wa ryari"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "N’umusi waho umutima w’umuntu utazo shigikira umutima w’uwundi muntu kukintu icarico cose, n’itegeko ryuwo musi rizoba ari iry’Imana gusa"
        }
    ]
}