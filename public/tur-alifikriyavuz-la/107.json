{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gordun mu, o hesab gununu inkar edeni!... (Ebu Cehil’i)"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste bu kimsedir ki, itib kakıyor yetimi"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu yedirmege de tesvik etmez (kimseyi)"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Artık siddetli azab olsun, (nifak suretiyle) namaz kılanlara ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar, namazlarından gafildirler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar, (namazlarıyla insanlara) gosteris yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve zekatı vermezler"
        }
    ]
}