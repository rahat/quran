{
    "chapter": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Wehe jedem Stichler, Verleumder"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "der ein Vermogen zusammentragt und es gezahlt zurucklegt"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Er meint, daß sein Vermogen ihn unsterblich mache"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Aber nein! Er wird wahrlich in Al-Hutama geschleudert werden"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Doch was laßt dich wissen, was Al-Hutama ist"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "(Es ist) Allahs angezundetes Feuer"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "das bis zu dem (innersten der) Herzen vordringt"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Es schlagt uber ihnen zusammen"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "in langgestreckten Saulen"
        }
    ]
}