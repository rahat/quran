{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "(Эй, каапырлар!) силердин жаратылууңар татаалыраакпы же асмандынбы?! Аны (Аллаһ) жаратты"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Шыбын көтөрүп, бекем-кынтыксиз кылды"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Түнүн караңгы кылды жана (таң аттырып) жарыгын чыгарды"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Андан кийин жерди жайып (кооздоп) койду"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Андан сууларын, жайлоолорун чыгарды"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Тоолорду (бекем) орнотту"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Силер үчүн жана силердин айбандарыңар үчүн пайдалануу (ырыскы) болсун деп"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Качан чоң Кыямат келсе"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Ал күндө инсан (дүйнөдөгү) иш -аракеттерин эстейт"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Караган адамдарга тозок (анык) көргөзүлөт"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Кимде-ким чектен чыккан болсо"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "жана дүйнө жашоосун (Акыреттен) артык көргөн болсо"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "анын орду албетте, тозокто"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ал эми, ким Раббисинин алдында (сурак берип) туруудан коркуп, өзүн (арам) каалоо-кумарлардан тыйса"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "анын орду албетте, Бейиште"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "(Кайра тирилүүдөн шектенген адамдар) сенден Кыяматтын качан болушун сурашат"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Аны(н убактысын) билүүдөн сен алыссың"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Анын (качан болоору жөнүндөгү илимдин башы жана) аягы Раббиңе гана тиешелүү"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Сен болгону андан (Кыяматтан) корко турган кишилерди эскертүүчүсүң"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Алар (Кыяматты «жалган» дегендер) аны (өз көздөрү менен) көргөн күндө, (бул дүйнөдө) бир күн кечке чейин же түшкө чейин гана турган сыяктуу болуп калышат"
        }
    ]
}