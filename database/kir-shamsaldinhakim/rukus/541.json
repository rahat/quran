{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Жер катуу титирегенде"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "жана өзүнүн “жүктөрүн” чыгарып таштаганда"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Инсан (коркуп жана таң калып) “буга эмне болду?!” дейт"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Ошол Күндө жер өз кабарларын сүйлөйт"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Анткени, ага Раббиң (“сүйлө!” деп) вахий кылган.”"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "Ал Күнү адамдар амалдары көргөзүлүшү үчүн топ-топ болуп келишет"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Жана ким кыпын салмагындай* жакшылык кылган болсо — аны көрөт"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "жана ким кыпын салмагындай жамандык жасаган болсо — ошону көрөт"
        }
    ]
}