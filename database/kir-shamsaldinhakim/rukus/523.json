{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Күн оролуп (нуру жоголуп)"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "жылдыздар (кыйрап) төгүлүп"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Тоолор (тытылган жүн сыяктуу) учурулуп"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Курсагында он айлык баласы бар (кымбат баалуу) төөлөр дагы көңүл сыртында калып,”"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Жапайы айбандар (үркүп, бир жерге) чогулуп"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Деңиздер жанып-от болуп"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Жандар бири - бирине коштолуп...°"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Тирүүлөй көмүп жиберилген бөбөк кыздар суралганда —"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Кайсы күнөө(ңөр) үчүн өлтүрүлдү(ңөр деп)"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Жана (бардык адамдарга) амал баракчалары таратылып"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Асман сыйрылып алынганда"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Тозок (катуу) кызытылып"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Бейиш (ыймандуу адамдарга) жакын алып келингенде"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(Ошол күнү бардык) жан (Акырет үчүн) эмне алып келгенин билет"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Жок. Артта кала турган жылдыздарга ант ичип"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(аларга) жолдош, көрүнбөгөн жылдыздарга ант ичип"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "(караңгысы менен) келген түнгө ант ичип"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "агарган таңга ант ичип (айтамын)"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Чынында, ал (Кураан) Улуу Элчинин Сөзү"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Арш Ээсинин? алдында (Жебрейилдин) туруктуу урматы бар (жана ал) өтө күч — кубаттуу"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Ал жерде (жогорку жамаат арасында) сөзү өтүмдүү (жана) ишенимдүү"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "(Эй, мушриктер!) Силердин дайым бирге жүргөн шеригиңер (Мухаммад) жинди эмес"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Ал чынында аны (Жебирейилди) айкын мейкиндикте көргөн"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Жана ал кайыпты (силерден) кызгануучу эмес"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Жана ал” каргышка жолуккан Шайтандын сөзү да эмес"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Эми, (чындыктан жүз буруп) кайда бара жатасыңар"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Ал (Кураан) албетте, ааламдар үчүн эскертүү"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Силердин араңардан оңолууну каалгандар үчүн (эскертүү)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Жана силер (о, пенделер) ааламдардын Раббиси каалагандан башканы каалай албайсыңар"
        }
    ]
}