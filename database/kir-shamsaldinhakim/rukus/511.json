{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Жок, Мен айга ант (ичип)"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "кайтып кеткен түнгө ант (ичип)"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "(агарып) келе жаткан таңга ант (ичип)"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "(Айтамын): Чынында ал (“Сакар” тозогу) чоң балээлердин бири"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "(“Сакар” тозогу) адамдарга эскертүү"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Силердин араңардагы, (Аллаһтын ыраазычылыгына) умтулууну же болбосо кетенчиктеп кетүүнү каалагандар үчүн"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Ар бир жан (ээси) өзү жасаган (күнөө) иштердин туткуну"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Оң тарап ээлери гана андай (туткун) эмес"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Алар Бейиштерде туруп сурашат"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "(тозоктогу) кылмышкерлерден"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "«Силерди «Сакар» тозогуна эмне түшүрдү?»"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Алар айтышат: «Биз намаз окуучулардан болбодук"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Жана бей-бечараларды тамактандырбадык"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "(Күнөө деңизине) чөмүлгөндөр менен бирге чөмүлдүк"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Жана Акырет күндү жалган дедик"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Башыбызга өлүм келгенге чейин»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Эми аларга (тозокуларга) эч бир шапаатчынын шапааты пайда бербейт"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Аларга (каапырларга) эмне болду, насааттан (Кураандан) жүз буруп качышат"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Жапайы эшектерге окшоп"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "арстандан үркүп качкан"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Жок, алардын ар бири (жеке өзүнө гана, атайын арналган) ачык китептер берилишин каалашат!”"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Жок, андай эмес! (чынында) алар Акыреттен коркушпайт"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Жок, андай эмес! Чынында, бул (Кураан эң чоң) эскерме-насаат"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Ким кааласа андан сабак алат"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Бирок, (андан) Аллаһ каалаган пенделер гана насаат ала билишет. (Анткени), Ал (Аллаһ Таала) гана коркууга жана кечирим суроого татыктуу"
        }
    ]
}