{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Jalgastı jiberilgenderge"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Qattı esip, usırwsılarga"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Tarqatqan sayın tarqatwsılarga"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ayırgan sayın ayırwsılarga"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Sosın zikir tastawsılarga"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Sıltaw turinde meyli eskertw turinde bolsın, osılarga sert. (Bul ayattardagı ant etilgen narselerdi Alla (T.) asıq bayan etpegen. Mufassirler bul jonde turli koz qarastar bildirgen. Mısalı: Peristeler, 2-Jelder, 3-Quran Karim, 4-Paygambarlar. Ne bari jel, ne bari peristeler"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Sın maninde senderge wade etilgen (qiyamet) albette boladı"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Juldızdar songen satte"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Kok jarılganda"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Tawlar ugitilip, usırılganda"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Paygambarlardın waqtı jetken kezde"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Qaysı kunge kesiktirilip edi"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Sesim kunine"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ol sesim kunin qaydan bilesin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Ol kuni, jasınga sıgarwsılarga nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Burıngılardı joq etpedik pe"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sosın keyingilerdi de. Solardın ayagın qustıramız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Kunakarlarga osılay isteymiz"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Jasınga sıgarwsılar usin sol kuni nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Senderdi bolımsız swdan jaratpadıq pa"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonday onı berik bir jerde (jatırda) etpedik pe"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belgili bir merzimge deyin"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Onın tagdırın molserledik. Nendey tolıq kuske iemiz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Jasınga sıgarwsılarga sol quni nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Jer juzin bir jinalıs jeri qılmadıq pa"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Tirilerge de olilerge de"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Jer juzinde asqar tawlar jasap, senderdi damdi swmen swardıq"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Jasınga sıgarwsılarga ol kuni nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(Ol kuni olarga): \"Otirik degen narselerine qaray jurinder"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Us bwnaqtı tunekke qaray ketinder\" (delinedi)"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ol, kolenke bolmaydı da jalınnan qorgamaydı"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Oytkeni tozaq sarayday usqın atadı"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sarı tuyelerdey"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Jasınga sıgarwsılarga ol kuni nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Ol kuni olar soylemeydi"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Sonday-aq olardın jelewletwlerine ruxsat berilmeydi"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Jasınga sıgarwsılarga ol kuni nendey okinis"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ol sesim kuni, senderdi de burıngılardı da jinaymız"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir adisterin bar bolsa, Magan qoldanındar"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Jasınga sıgarwsılarga ol kuni nendey okinis"
        }
    ]
}