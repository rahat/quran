{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine boyun egdigi zaman, ki ona yarasan da budur"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yeryuzu dumduz edildigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icindekiler bosalıp, atıldıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve kendisine yarastıgı gibi Rabbine boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Sen Rabbine kavusuncaya kadar calısıp cabalayacak, sonunda O'na kavusacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sagından verilmisse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesapla hesap verecektir"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ailesinin yanına sevinc icinde donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilmisse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Olup, yok olmayı cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Nitekim o, ailesinin yanında neseli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, asla donmeyecegini sanıyordu"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Elbette donecekti! Senin Rabbin onu gorendir"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Andolsun safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve topladıklarına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki Ay’a"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Suphesiz siz halden hale gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara ne oluyor da iman etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlara Kur’an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, o kafirler (hakkı) yalan sayıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah, onların (iclerinde) sakladıklarını en iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara acı bir azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak, iman edip salih amel yapanlar haric. Onlar icin kesintisiz bir odul vardır"
        }
    ]
}