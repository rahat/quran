    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "Emrimiz ancak bir tek emirdir. Goz kırpması gibidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Andolsun ki benzerlerini helak ettik. Ibret alan var mı"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Onların yaptıkları her sey kitaplarda (kayıtlardadır)"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Buyuk, kucuk; satır satır"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Takva sahipleri Cennetlerde ve ırmaklar icindedir"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Guclu bir hukumdarın hak meclisindedirler"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur’anı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes ve Ay bir hesaba baglıdır"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler, agaclar da secde ederler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "(Allah) Gogu yukseltip ve mizanı/adaleti koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "O halde olcude haddi asmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartıyı adaletle yapın, teraziyi eksik tutmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Allah yeri, canlılar icin dosedi"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyveler, salkım salkım hurmalar"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Saplı ve kabuklu hububat ve hos kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Oyleyse (ey cinler ve insanlar) Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı iyice pismis gibi kuru balcıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de yalın bir atesten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "O halde Rabbinizin hangi nimetini yalanlayabilirsiniz"
        }
    ]
