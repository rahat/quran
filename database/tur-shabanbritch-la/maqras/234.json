{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber) Yuzunu eksitti ve dondu"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Ona gozleri gormeyen kimse geldi diye…"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin belki o, arınacaktır"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya ogut alacak da ogut ona fayda verecektir"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama, kendisini ihtiyacsız gorene"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen, yoneliyorsun ona"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Arınmamasından sen sorumlu degilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama, sana kosarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ve korkarak"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen ise ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır! (Sunu iyi bil ki) suphesiz bu bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen kimse dusunup, ogut alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Serefli sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yukseltilmis ve tertemiz"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Elcilerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Serefli ve tertemiz/itaatkar"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası (kafir) insan ne de cok kafirdir"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah, onu hangi seyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir sperm damlasından onu yaratıp, (asamalardan gecirerek) bicime koydu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da ona yolu kolaylastırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurup kabre koydu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra, onu diledigi zaman yeniden diriltecek"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır! Buna ragmen henuz onun emrini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Insan yemegine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Ki, biz suyu doktukce doktuk"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra yeri yardıkca yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Ve orada taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzumler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler, hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Iri agaclı bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve hayvanlarınız icin bir meta olarak"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "O buyuk gurultu geldigi zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gun kisi kardesinden kacar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Esinden ve evladından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun herkes icin kendine yetecek bir isi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Yuzler vardır o gun apaydınlık"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Gulec ve neseli"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yuzler vardır o gun, uzeri tozlu"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Karartı burumus"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste onlar, kafirler ve facirler onlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes duruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, sacılıp dagıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer basıbos bırakıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kisiler (benzerleriyle) birlestirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gomulen kız cocuguna soruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suctan olduruldugu…"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) acıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok, sıyrılıp, ayrıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne hazırladıgını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! Yemin ederim gizlenen (yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yorungesinde gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karardıgında geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Aydınlanmaya basladıgında sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Suphesiz o, serefli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Guclu, Ars'ın sahibi yanında itibarlı"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Sozu dinlenir, sonra guvenilir de"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız mecnun degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu (Cebrail’i) apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında cimri degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus seytanın sozu de degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Oyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, ancak alemler icin bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dogru yolu isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz de dileyemezsiniz"
        }
    ]
}