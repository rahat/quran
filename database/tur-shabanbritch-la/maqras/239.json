{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin gogsunu ferahlatıp, genisletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yukunu uzerinden indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Sanını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Suphesiz her zorlukla, bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Her zorlukla bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Oyleyse bos kaldın mı hemen (ibadetle) yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Yalnız Rabbine ragbet et"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun, Incir ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dagı’na"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve bu guvenli beldeye"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz, insanı en guzel sekilde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Daha sonra, onu asagıların en asagısına indirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Fakat iman edip salih amel isleyenler icin eksilmeyen devamlı bir ecir vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "O halde, sana hesap gununu yalan saydıran nedir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Allah, hukum verenlerin en ustunu degil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku! Yaratan Rabbinin adıyla"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Insanı alaktan yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku! Rabbin, en buyuk kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalemle ogreten…"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini ogretendir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır! Suphesiz insan azgınlık eder"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini mustagni gordugunde"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Oysa, donus Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engelleyeni gordun mu"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gordun mu? Eger o hidayet uzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya (onu) takvayı emrediyorken (mi engelliyor)"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu? Eger, yalanlamıs ve yuz cevirmisse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Allah’ın gordugunu bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır! Eger son vermezse, elbette perceminden yakalayıp, surukleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, gunahkar perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Haydi cagırsın meclisini"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Cagıracagız zebanileri"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır! ona itaat etme! (Allah'a) Secde et ve (Ona) yaklas"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Suphesiz biz, (Kur’an’ı) Kadir Gecesi'nde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir Gecesi'nin ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir Gecesi bin aydan hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh, Rabbinin izni ile her is icin o gece iner"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "Fecrin dogana kadar bir selamet olsun"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap ehlinden ve musriklerden kafirler, kendilerine apacık delil gelinceye kadar (kufurlerinden) ayrılacak degiller"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "(Iste o apacık delil) Allah tarafından gonderilen ve tertemiz sahifeleri okuyan bir elcidir"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "(Bu sahifelerde) yazılı hukumler vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kendilerine kitap verilenler, ancak kendilerine apacık delil geldikten sonra ayrılıga dustuler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Halbuki onlara ancak, dini yalnız O'na has kılarak ve hanifler olarak Allah'a ibadet etmeleri, namaz kılmaları ve zekat vermeleri emrolunmustu. Iste dosdogru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap ehlinden ve musriklerden olan kafirler, icinde ebedi kalacakları Cehennem atesindedirler. Iste onlar, yaratılmısların en serlileridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "Iman edip, salih amel yapanlar ise, iste onlar, yaratılmısların en hayırlıları onlardır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların mukafatı Rableri katında, altından ırmaklar akan ve icinde ebedi kalacakları Adn cennetleridir. Allah, onlardan razı olmustur Onlar da Allah’tan razı olmuslardır. Iste bu mukafat, Rabbinden korkanındır"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, siddetle sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insan: Buna ne oluyor? dediginde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, amelleri kendilerine gosterilmek icin boluk boluk donerler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre agırlıgınca iyilik yapmıssa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre agırlıgınca kotuluk yapmıssa onu gorur"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun, soluya soluya kosanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Kosarken) kıvılcım sacanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Toplulugun ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Insan, Rabbine karsı gercekten nankordur"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Kendisi de buna sahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Suphesiz onun mal sevgisi de cok siddetlidir"
        }
    ]
}