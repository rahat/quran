{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi sorusturup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Buyuk haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Onlar ki, hakkında ihtilaf ediyorlar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, yakında ogrenecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Sonra, Hayır! Yakında ogrenecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeri bir dosek kılmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi de cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi ortu kıldık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu de gecimlik kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuze de sapasaglam yedi kat bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Isık sacan bir de lamba yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Ve o sıkıstıranlardan/bulutlardan sarıl sarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler ve bitkiler cıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine girmis sarmas dolas bahceler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Ayırım/fasl gunu belirlenmis bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur’a uflendigi gun boluk boluk geleceksiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "(O gun) gok acılıp, kapı kapı olmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulup, serap olmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem de gozlemektedir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınların varacagı sıgınak"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada caglar boyu kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne serinlik tadacaklar, ne de bir icecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Kaynar su ve irinden baska"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Uygun bir ceza"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar, hesabı ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi yalanladıkca yalanlamıslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Her seyi bir kitapta sayıp yazmısızdır"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Iste, tadına bakın, size azaptan baska bir sey artırmayacagız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Muttakiler icin kurtulus"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bahceler ve baglar"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Gogusleri olgun, yasıt kızlar"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Dolu dolu kadehler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada bos ve yalan soz isitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "(Bunlar) Rabbinden bir karsılık, bol bir bagıstır"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "(Bunlar) goklerin, yerin ve ikisi arasında bulunanların Rabbindendir. O, Rahman'dır. Ona hitap etmeye guc yetiremezler"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Ruh/Cebrail ve meleklerin saf halinde durdukları gun, ancak Rahman’ın kendisine izin verdigi konusabilir. O da dogruyu konusur"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Iste bu, hak olan gundur. Dileyen Rabbine donus yolu tutar"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azap ile uyardık. Kisi o gun, elleri ile ne sunduguna bakar. Kafir olan da: \"Keske toprak olsaydım!\" der"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Yemin olsun siddetle sokup alanlara…"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Kolayca cekip cıkaranlara…"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "(Gokyuzunde) Yuzdukce yuzenlere…"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıstıkca yarısanlara…"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve isleri duzene sokanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun (birinci uflemeyle) sarsılacak olan sarsılır"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Bir digeri onu izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun kalpler korkudan carpar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozleri korku ile yere egilmistir"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki: \"Biz eski halimize mi dondurulecegiz?\" derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Curuyup ufalanmıs kemikler haline geldigimiz zaman mı"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Oyleyse bu donus husrandır, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O, ancak tek bir cıglıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Iste o zaman onlar, hemen (kendilerini mahserde) buluverirler"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa’nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani, Rabbi ona, mukaddes Tuva’da seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun’a git, cunku o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ve de ki: Arınmaya istekli misin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbine ileteyim de O’na karsı derinden korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona en buyuk ayeti gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını donup, kosmaya basladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp soyle seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yuce rabbiniz benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu dunya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Iste bunda gercekten korkan kimse icin bir ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "(Olumden sonra) Sizi mi (yeniden) yaratmak daha guctur, yoksa gogu mu? Onu bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Onun tavanını yukseltti ve duzenledi"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karanlık yaptı, gunduzunu aydınlıga cıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeri bundan sonra yaydı"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagını cıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dagları da yerlestirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın yararlanması icin…"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "En buyuk kıyamet (ikinci uflenis) geldigi zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Insanın yapıp ettiklerini hatırlayacagı gun"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cehennem, gorenler icin apacık bir sekilde gosterilir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Kim azdıysa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dunya hayatını tercih ettiyse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Cehennem onun varacagı barınaktır"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ama, kim de Rabbinin makamından korkup, kendisini heveslerine uymaktan alıkoymussa"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Cennet de onun barınagıdır"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyametin ne zaman gelip, catacagını soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen onu nereden bileceksin"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Rabbine aittir, onun sonucu"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkan kimseye bir uyarıcısın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gordukleri gun, onlar sanki, sadece bir aksam veya bir kusluk vakti suresince (dunyada) kalmıs olurlar"
        }
    ]
}