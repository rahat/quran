{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Yıldıza andolsun batarken"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "Arkadasınız (dogru yoldan) cıkmadı, sapıtmadı"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "Kendi hevasından konusmuyor"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "O ancak kendisine vahyedilen bir vahiydir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Bunu ona cok guclu biri ogretti"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "Guc ve guzel gorunuslu. (En yuksek ufukta) yukseliverdi"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "O, en yuksek ufukta idi"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra yaklasıp indi"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "Araları iki yay kadar veya daha yakın idi"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "Iste (Allah) kuluna vahyettigini vahyetti"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "(Gozleriyle) gordugunu kalbi yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onunla gordugu sey hususunda tartısıyor musunuz"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Hakikaten onu (Cebrail'i) diger bir iniste de gordu"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "Sidre-i Munteha’nın yanında"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "Cennetu'l-Me'va da onun yanındadır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "Sidre’yi buruyen (buyuk bir sey) buruyordu"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Goz, ne sastı, ne astı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Rabbinin ayetlerinden en buyuklerini gordu"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gordunuz mu Uzza’yı ve Lat’ı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Diger bir ucuncusu Menat’ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Erkekler sizin, disiler O’nun mu"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "Oyleyse bu haksız bir taksim"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Onlar, sizin ve atalarınızın adlandırılmasından baska bir sey degildir. Allah, onlar hakkında bir delil indirmemistir. Onlar ancak zanna ve nefislerinin arzusuna uyuyorlar. Oysa, onlara Rablerinden hidayet gelmistir"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Yoksa insana her arzu edip istedigi sey mi var"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Ahiret de dunya da Allah’ındır"
        }
    ]
}