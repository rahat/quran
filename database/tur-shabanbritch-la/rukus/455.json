{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Savurup tozutan ruzgarlara andolsun"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Agır yuk tasıyan (bulut)lara"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp giden (gemi)lere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Isleri taksim edenlere (Meleklere)"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size vadedilen elbette dogrudur"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ceza gunu kuskusuz vuku bulacaktır"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Guzel yolları olan goge andolsun"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Ki siz celiskili bir sozler icindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Ondan cevrilen cevrilir"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Kahrolsun yalancılar"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Ki onlar, koyu bir cehalet icerisinde kalmıs gafillerdir"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Ceza gunu ne zaman diye sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gun, onların ateste yakılarak azap gorecekleri gundur"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Tadın azabınızı. Bu acele gelmesini istediginiz seydir"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Muttakiler, Cennetlerde ve pınarlardadır"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rablerinin kendilerine verdiklerini almıslardır. Cunku onlar bundan once iyi kimseler idiler"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri az uyuyorlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seherleri de onlar magfiret diliyorlardı"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Onların mallarında isteyenler ve ihtiyac sahipleri icin de bir hak vardır"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Yeryuzunde gercekten iman edecekler icin ayetler vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi icinizde de, gormuyor musunuz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gokte de sizin rızkınız ve size vadedilen seyler vardır"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Gogun ve yerin Rabbine andolsun ki, size vadedilenler, tıpkı sizin konusmanız gibi haktır"
        }
    ]
}