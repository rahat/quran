{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Yemin olsun kıyamet gunune"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Yemin olsun kendini kınayan nefse"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Insan, kemiklerini bir araya getiremeyecegimizi mi sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, onun parmak uclarını bile yaratıp, duzenlemeye gucumuz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Oysa, insan onundekini yalanlamak ister de"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Kıyamet gunu ne zaman? diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Goz dehsetlekamastıgı zaman"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ay tutuldugu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Gunes ve Ay bir araya getirildigi zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "(O gun) insan: Bugun kacacak yer nerede? der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır! Asla kacacak bir yer yoktur"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun varıp durulacak yer, sadece Rabbinin katıdır"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun insana, ileri goturdugu ve geri bıraktıgı ne varsa bildirilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Dogrusu insan kendi sahsı aleyhine bir huccettir"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Isterse ozur beyan etsin"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu (vahyi) carcabuk almak icin dilini kımıldatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Hic suphesiz onu (kalbinde) toplamak ve onu (diline salarak) okumak bize aittir"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Onu okudugumuz zaman onun okunusuna tabi ol"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra onu acıklamak yine bize aittir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır! Siz, acil olanı/dunyayı seviyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ahireti bırakıyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gun, parıldayan yuzler vardır"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabbine bakar"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "O gun asık yuzler de vardır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Bellerini bukecek bir felakete ugrayacagını anlayacak"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Hayır! Ruh koprucuk kemigine dayanmıs"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Yok mu okuyup (sifa isteyen)? denmis"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Anlar ki, bu bir ayrılıs"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacakları birbirine dolasmıstır"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gun sevk, Rabbinedir"
        }
    ]
}