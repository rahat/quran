{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemis, namaz kılmamıs"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamıs, yuz cevirmis"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da calım satarak ailesine gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Helak olsun sana helak"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra sen buna layıksın"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan kendisini bası bos bırakılacagını mı sanar"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra “alaka” olmus, Allah, onu yaratmıs ve duzenlemisti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan da iki esi, erkek ve disiyi var etmisti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın oluleri diriltmeye gucu yetmez mi"
        }
    ]
}