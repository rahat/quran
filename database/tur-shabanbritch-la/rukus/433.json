{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Zakkum agacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Gunahkarın yemegidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Maden eriyigi gibi karınlarda kaynar durur"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Kaynar suyun kaynadıgı gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu siddetle tutun, Cehennem'in ortasına atın"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra kaynar su azabından basından asagı bosaltın"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tat bunu! Hani sen guclu ve serefliydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Iste bu sizin hakkında suphe ettiginiz seydir"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Takva sahipleri ise, onlar guvenli bir makamdadırlar"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Cennet'lerde ve pınarlarda"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Halis ipek ve parlak atlastan elbiseler giyerek, karsılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Iste boyle! Onları iri gozlu hurilerle evlendirmisizdir"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Orada guven icinde her meyveyi isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Ilk olumden baska bir olum tatmazlar. Onlar cehennem azabından korunmustur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinden bir lutuf olarak. Iste buyuk kurtulus budur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Ogut alsınlar diye onu senin dilin ile kolaylastırdık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "O halde bekle! Zaten onlar da bekliyorlar"
        }
    ]
}