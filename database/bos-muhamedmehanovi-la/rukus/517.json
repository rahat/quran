{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Oni koji su se Allaha bojali bit ce među izvorima, u gustim bascama"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "I među vocem koje budu zeljeli"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Jedite i pijte, prijatno nek vam je, zbog onog sto ste radili"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Tako cemo Mi one koji cine dobra djela nagraditi"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Jedite i naslađujte se, ali zakratko! - Vi ste zaista prestupnici"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "A kad im se kaze: \"Namaz obavljajte!\", oni namaz ne obavljaju"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Pa u koji ce govor, ako ne u Kur'an, vjerovati"
        }
    ]
}