{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Tako mi onih koji se jedan za drugim salju"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "i onih sto pusu zestoko"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "i onih koji rasprostiru"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "i onih sto razdvajaju"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "i onih sto Opomenu dostavljaju"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "kao opravdanje ili upozorenje"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "sigurno ce biti ono cime vam se prijeti"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Kada zvijezde sjaj izgube"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "i kada se nebo otvori"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "i kada se planine u prah zdrobe"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "i kada se poslanici u određeno vrijeme okupe"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Do kojeg je to dana odlozeno"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Do Dana sudnjeg"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "A znas li ti sta je Dan sudnji"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Tesko toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Zar Mi nismo drevne narode unistili"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "i poslije njih i one koji su za njima dolazili"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Tako cemo sa svim prestupnicima postupiti"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Zar vas od neznatne tekucine ne stvaramo"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "koju na pouzdano mjesto stavljamo"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "do roka određenoga"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Tako smo odredili, a divni li smo odreditelji"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Zar Mi nismo ucinili Zemlju sabiralistem"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "zivih i mrtvih"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "i na njoj nepomicne visoke planine postavili, i zar vam Mi ne dajemo da slatku vodu pijete"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "A tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Idite prema onome sto ste neistinom smatrali"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Idite prema dimu u tri prama razdvojenom"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "koji hlada nece davati i koji od plamena nece zaklanjati"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "On ce kao kule iskre bacati"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "kao da su kamile riđe"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Dan je to u kome oni nece ni prozboriti"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "i pravdanje im nece dozvoljeno biti"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Tesko taj dan poricateljima"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "To je Dan sudnji, i vas i narode drevne cemo sakupiti"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "pa ako se lukavstvom kakvim budete znali posluziti, dovijte se protiv Mene"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Tesko taj dan poricateljima"
        }
    ]
}