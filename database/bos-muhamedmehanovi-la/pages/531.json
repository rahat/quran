    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "i naređenje Nase samo je jedna rijec - sve bude u tren oka"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "A Mi smo vec vama slicne unistili, pa ima li ikoga ko bi se prisjetio"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "I sve sto su uradili u listovima je"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "i sve, i malo i veliko, u retke je stavljeno"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Oni koji su se Allaha bojali bit ce u dzennetskim bascama i pored rijeka"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "na mjestu Istine, kod Vladara Apsulutno Mocnoga"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Svemilosni"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "poucava Kur'anu"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "stvara covjeka"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "uci ga izgovoru"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Sunce i Mjesec po tacno određenom proracunu plove"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "i zvijezde i drvece sedzdu cine"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "a nebo je digao. I postavio je Mjerilo"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "da ne prelazite granice pravde"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "i pravo mjerite i na tereziji ne zakidajte"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "A Zemlju je za stvorenja razastro"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "na njoj ima voca i palmi s plodom u caskama"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "i zita s pljevom i liscem na stabljikama"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "pa, koju blagodat Gospodara svoga poricete"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "On je covjeka od sasusene ilovace, kao sto je grncarija, stvorio"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "a dzine od plamena vatre"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "pa, koju blagodat Gospodara svoga poricete"
        }
