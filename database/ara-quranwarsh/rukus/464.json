{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "كَذَّبَتْ ثَمُودُ بِالنُّذُرِۖ"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "فَقَالُوٓاْ أَبَشَراࣰ مِّنَّا وَٰحِداࣰ نَّتَّبِعُهُۥٓ إِنَّآ إِذاࣰ لَّفِے ضَلَٰلࣲ وَسُعُرٍ"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "اَ۟لْقِيَ اَ۬لذِّكْرُ عَلَيْهِ مِنۢ بَيْنِنَا بَلْ هُوَ كَذَّابٌ اَشِرࣱۖ"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "سَيَعْلَمُونَ غَداࣰ مَّنِ اِ۬لْكَذَّابُ اُ۬لَاشِرُۖ"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "إِنَّا مُرْسِلُواْ اُ۬لنَّاقَةِ فِتْنَةࣰ لَّهُمْ فَارْتَقِبْهُمْ وَاصْطَبِرْۖ"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "وَنَبِّئْهُمُۥٓ أَنَّ اَ۬لْمَآءَ قِسْمَةُۢ بَيْنَهُمْۖ كُلُّ شِرْبࣲ مُّحْتَضَرࣱۖ"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "فَنَادَوْاْ صَٰحِبَهُمْ فَتَعَاط۪يٰ فَعَقَرَۖ"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "فَكَيْفَ كَانَ عَذَابِے وَنُذُرِۦٓۖ"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "إِنَّآ أَرْسَلْنَا عَلَيْهِمْ صَيْحَةࣰ وَٰحِدَةࣰ فَكَانُواْ كَهَشِيمِ اِ۬لْمُحْتَظِرِۖ"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "وَلَقَدْ يَسَّرْنَا اَ۬لْقُرْءَانَ لِلذِّكْرِ فَهَلْ مِن مُّدَّكِرࣲۖ"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "كَذَّبَتْ قَوْمُ لُوطِۢ بِالنُّذُرِۖ"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "إِنَّآ أَرْسَلْنَا عَلَيْهِمْ حَاصِباً اِلَّآ ءَالَ لُوطࣲ نَّجَّيْنَٰهُم بِسَحَرࣲۖ"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "نِّعْمَةࣰ مِّنْ عِندِنَاۖ كَذَٰلِكَ نَجْزِے مَن شَكَرَۖ"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "وَلَقَدَ اَنذَرَهُم بَطْشَتَنَا فَتَمَارَوْاْ بِالنُّذُرِۖ"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "۞وَلَقَدْ رَٰوَدُوهُ عَن ضَيْفِهِۦ فَطَمَسْنَآ أَعْيُنَهُمْ فَذُوقُواْ عَذَابِے وَنُذُرِۦۖ"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "وَلَقَدْ صَبَّحَهُم بُكْرَةً عَذَابࣱ مُّسْتَقِرࣱّۖ"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "فَذُوقُواْ عَذَابِے وَنُذُرِۦۖ"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "وَلَقَدْ يَسَّرْنَا اَ۬لْقُرْءَانَ لِلذِّكْرِ فَهَلْ مِن مُّدَّكِرࣲۖ"
        }
    ]
