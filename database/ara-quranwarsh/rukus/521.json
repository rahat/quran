{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَآنتُمُۥٓ أَشَدُّ خَلْقاً اَمِ اِ۬لسَّمَآءُۖ بَنَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمْكَهَا فَسَوَّيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغْطَشَ لَيْلَهَا وَأَخْرَجَ ضُحَيٰهَاۖ"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَالَارْضَ بَعْدَ ذَٰلِكَ دَحَيٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخْرَجَ مِنْهَا مَآءَهَا وَمَرْعَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَالْجِبَالَ أَرْسَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰعاࣰ لَّكُمْ وَلِأَنْعَٰمِكُمْۖ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ اِ۬لطَّآمَّةُ اُ۬لْكُبْر۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوْمَ يَتَذَكَّرُ اُ۬لِانسَٰنُ مَا سَع۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ اِ۬لْجَحِيمُ لِمَنْ يَّر۪يٰۖ"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغ۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ اَ۬لْحَيَوٰةَ اَ۬لدُّنْي۪ا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ اَ۬لْجَحِيمَ هِيَ اَ۬لْمَأْو۪يٰۖ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنْ خَافَ مَقَامَ رَبِّهِۦ وَنَهَي اَ۬لنَّفْسَ عَنِ اِ۬لْهَو۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ اَ۬لْجَنَّةَ هِيَ اَ۬لْمَأْو۪يٰۖ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "۞يَسْـَٔلُونَكَ عَنِ اِ۬لسَّاعَةِ أَيَّانَ مُرْسَيٰهَاۖ"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكْر۪يٰهَآۖ"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَيٰ رَبِّكَ مُنتَهَيٰهَآۖ"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَآ أَنتَ مُنذِرُ مَنْ يَّخْشَيٰهَاۖ"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمْ يَوْمَ يَرَوْنَهَا لَمْ يَلْبَثُوٓاْ إِلَّا عَشِيَّةً اَوْ ضُحَيٰهَاۖ"
        }
    ]
}