{
    "maqras": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞اَ۟حْشُرُواْ اُ۬لذِينَ ظَلَمُواْ وَأَزْوَٰجَهُمْ وَمَا كَانُواْ يَعْبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "مِن دُونِ اِ۬للَّهِ فَاهْدُوهُمُۥٓ إِلَيٰ صِرَٰطِ اِ۬لْجَحِيمِۖ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وَقِفُوهُمُۥٓ إِنَّهُم مَّسْـُٔولُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "مَا لَكُمْ لَا تَنَاصَرُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بَلْ هُمُ اُ۬لْيَوْمَ مُسْتَسْلِمُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وَأَقْبَلَ بَعْضُهُمْ عَلَيٰ بَعْضࣲ يَتَسَآءَلُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قَالُوٓاْ إِنَّكُمْ كُنتُمْ تَاتُونَنَا عَنِ اِ۬لْيَمِينِۖ"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قَالُواْ بَل لَّمْ تَكُونُواْ مُومِنِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وَمَا كَانَ لَنَا عَلَيْكُم مِّن سُلْطَٰنِۢ بَلْ كُنتُمْ قَوْماࣰ طَٰغِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فَحَقَّ عَلَيْنَا قَوْلُ رَبِّنَآ إِنَّا لَذَآئِقُونَ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فَأَغْوَيْنَٰكُمُۥٓ إِنَّا كُنَّا غَٰوِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فَإِنَّهُمْ يَوْمَئِذࣲ فِے اِ۬لْعَذَابِ مُشْتَرِكُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إِنَّا كَذَٰلِكَ نَفْعَلُ بِالْمُجْرِمِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إِنَّهُمْ كَانُوٓاْ إِذَا قِيلَ لَهُمْ لَآ إِلَٰهَ إِلَّا اَ۬للَّهُ يَسْتَكْبِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "وَيَقُولُونَ أَئِنَّا لَتَارِكُوٓاْ ءَالِهَتِنَا لِشَاعِرࣲ مَّجْنُونِۢۖ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بَلْ جَآءَ بِالْحَقِّ وَصَدَّقَ اَ۬لْمُرْسَلِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إِنَّكُمْ لَذَآئِقُواْ اُ۬لْعَذَابِ اِ۬لَالِيمِۖ"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وَمَا تُجْزَوْنَ إِلَّا مَا كُنتُمْ تَعْمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إِلَّا عِبَادَ اَ۬للَّهِ اِ۬لْمُخْلَصِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أُوْلَٰٓئِكَ لَهُمْ رِزْقࣱ مَّعْلُومࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فَوَٰكِهُۖ وَهُم مُّكْرَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "فِے جَنَّٰتِ اِ۬لنَّعِيمِ"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "عَلَيٰ سُرُرࣲ مُّتَقَٰبِلِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يُطَافُ عَلَيْهِم بِكَأْسࣲ مِّن مَّعِينِۢ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بَيْضَآءَ لَذَّةࣲ لِّلشَّٰرِبِينَ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لَا فِيهَا غَوْلࣱ وَلَا هُمْ عَنْهَا يُنزَفُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وَعِندَهُمْ قَٰصِرَٰتُ اُ۬لطَّرْفِ عِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كَأَنَّهُنَّ بَيْضࣱ مَّكْنُونࣱۖ"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فَأَقْبَلَ بَعْضُهُمْ عَلَيٰ بَعْضࣲ يَتَسَآءَلُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "۞قَالَ قَآئِلࣱ مِّنْهُمُۥٓ إِنِّے كَانَ لِے قَرِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يَقُولُ أَ۟نَّكَ لَمِنَ اَ۬لْمُصَدِّقِينَ"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أَ۟ذَا مِتْنَا وَكُنَّا تُرَاباࣰ وَعِظَٰماً اِنَّا لَمَدِينُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قَالَ هَلَ اَنتُم مُّطَّلِعُونَ"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فَاطَّلَعَ فَر۪ء۪اهُ فِے سَوَآءِ اِ۬لْجَحِيمِۖ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قَالَ تَاللَّهِ إِن كِدتَّ لَتُرْدِينِۦ"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "وَلَوْلَا نِعْمَةُ رَبِّے لَكُنتُ مِنَ اَ۬لْمُحْضَرِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أَفَمَا نَحْنُ بِمَيِّتِينَ"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إِلَّا مَوْتَتَنَا اَ۬لُاول۪يٰ وَمَا نَحْنُ بِمُعَذَّبِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إِنَّ هَٰذَا لَهُوَ اَ۬لْفَوْزُ اُ۬لْعَظِيمُۖ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لِمِثْلِ هَٰذَا فَلْيَعْمَلِ اِ۬لْعَٰمِلُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أَذَٰلِكَ خَيْرࣱ نُّزُلاً اَمْ شَجَرَةُ اُ۬لزَّقُّومِۖ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إِنَّا جَعَلْنَٰهَا فِتْنَةࣰ لِّلظَّٰلِمِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إِنَّهَا شَجَرَةࣱ تَخْرُجُ فِےٓ أَصْلِ اِ۬لْجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طَلْعُهَا كَأَنَّهُۥ رُءُوسُ اُ۬لشَّيَٰطِينِۖ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فَإِنَّهُمْ لَأٓكِلُونَ مِنْهَا فَمَالِـُٔونَ مِنْهَا اَ۬لْبُطُونَ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثُمَّ إِنَّ لَهُمْ عَلَيْهَا لَشَوْباࣰ مِّنْ حَمِيمࣲۖ"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثُمَّ إِنَّ مَرْجِعَهُمْ لَإِلَي اَ۬لْجَحِيمِۖ"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إِنَّهُمُۥٓ أَلْفَوَاْ اٰبَآءَهُمْ ضَآلِّينَ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فَهُمْ عَلَيٰٓ ءَاثٰ۪رِهِمْ يُهْرَعُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "وَلَقَد ضَّلَّ قَبْلَهُمُۥٓ أَكْثَرُ اُ۬لَاوَّلِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "وَلَقَدَ اَرْسَلْنَا فِيهِم مُّنذِرِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فَانظُرْ كَيْفَ كَانَ عَٰقِبَةُ اُ۬لْمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إِلَّا عِبَادَ اَ۬للَّهِ اِ۬لْمُخْلَصِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "وَلَقَدْ نَاد۪يٰنَا نُوحࣱ فَلَنِعْمَ اَ۬لْمُجِيبُونَۖ"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "وَنَجَّيْنَٰهُ وَأَهْلَهُۥ مِنَ اَ۬لْكَرْبِ اِ۬لْعَظِيمِۖ"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وَجَعَلْنَا ذُرِّيَّتَهُۥ هُمُ اُ۬لْبَاقِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وَتَرَكْنَا عَلَيْهِ فِے اِ۬لَاخِرِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سَلَٰمٌ عَلَيٰ نُوحࣲ فِے اِ۬لْعَٰلَمِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "إِنَّا كَذَٰلِكَ نَجْزِے اِ۬لْمُحْسِنِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "إِنَّهُۥ مِنْ عِبَادِنَا اَ۬لْمُومِنِينَۖ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثُمَّ أَغْرَقْنَا اَ۬لَاخَرِينَۖ"
        }
    ]
}