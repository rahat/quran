{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "ای به جامه خواب‌رفته‌"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "بپای شو پس بترسان‌"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "و پروردگار خویش را بزرگ شمر"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "و جامه‌های خویش را پاک ساز"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "و چرک را دوری گزین‌"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "و منّت منه که فزونی جوئی‌"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "و برای پروردگار خویش بشکیب‌"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "پس گاهی که دمیده شد در صور"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "آن است آن روز روزی دشوار"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "بر کافران ناهموار"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "بهل مرا با آنکه آفریدم تنها"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "و نهادم برایش مالی پهناور"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "و پسرانی گواهان‌"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "و آماده کردم برایش آمادگی‌"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "سپس امید دارد که بیفزایم‌"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "نه چنین است همانا او است آیتهای ما را دشمن‌"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "زود است رسانمش به عذابی سخت‌"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "همانا او اندیشید و سنجید"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "پس کشته شود چگونه سنجید"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "سپس کشته شود چگونه سنجید"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "پس نگریست‌"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "پس چهره دژم ساخت و روی در هم کشید"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "پس پشت کرد و کبر ورزید"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "پس گفت نیست این جز جادوئی که رسد"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "نیست این جز گفتار بشر"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "زود است چشانیمش دوزخ‌"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "و ندانی تو چیست دوزخ‌"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "نه به جای گذارد و نه فروهلد"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "دگرگون سازد پوست را"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "بر آن است نوزده تن‌"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "و نگردانیدیم یاران آتش را مگر فرشتگانی و نگردانیدیم شمار آنان را جز آزمایشی برای آنان که کفر ورزیدند تا یقین رسانند آنان که داده شدند کتاب را و بیفزایند آنان که ایمان آوردند ایمانی و دودل نکردند آنان که داده شدند کتاب را و مؤمنان و تا گویند آنان که در دلهاشان بیماری است و کافران چه چیز خواست خدا بدین مثَل چنین گمراه سازد خدا هر که را که خواهد و رهبری کند هر که را که خواهد و نداند لشگرهای پروردگارت را جز او و نیست آن جز یادآوریی برای بشر"
        }
    ]
}