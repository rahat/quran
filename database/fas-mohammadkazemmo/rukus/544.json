{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "بفریفت شما را (سرگرم ساخت) فزونی جستن‌"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا رسیدید به گورستان‌"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "نه چنین است زود است بدانید"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "پس نه چنین است زود است بدانید"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "نه چنین است اگر بدانید دانستن یقین‌"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "هر آینه ببینید البته دوزخ را"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "سپس ببینیدش البته عین یقین (یقین نمایان)"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "سپس پرسش شوید همانا در آن روز از نعمتها"
        }
    ]
}