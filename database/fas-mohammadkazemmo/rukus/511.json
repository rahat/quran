{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "نه چنین است سوگند به ماه‌"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "و شب گاهی که روی برتابد"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "و بامداد گاهی که رخ گشاید"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "که آن است همانا یکی از گرانها"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "ترساننده برای بشر"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "برای هر که بخواهد از شما پیش رود یا پس آید"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "هر کس (هر جان) بدانچه فراهم کرد گروگان است‌"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "مگر یاران راست‌"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "در باغهائی پرسش کنند"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "از گنهکاران‌"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "که چه چیز شما را درآورد به دوزخ‌"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "گویند نبودیم از نمازگزاران‌"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "و نبودیم بخورانیم به ناتوان‌"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "و بودیم فرو می‌رفتیم با فروروندگان‌"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "و بودیم تکذیب می‌کردیم به روز دین‌"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "تا بیامد ما را یقین‌"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "پس سود ندهدشان شفاعت شفاعتگران‌"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "پس چه شودشان که از یاد آوردند روی گردانان‌"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گوئیا آنانند خران رمنده‌"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "که گریخته‌اند از شیری ژیان‌"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلکه خواهد هر مردی از ایشان که داده شود نامه‌هائی گشاده (پهناور)"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "نه چنین است بلکه بیم ندارند آخرت را"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "نه چنین است همانا آن یادآوریی است‌"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "که هر که خواهد یاد آوردش‌"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "و یادآور نشوند جز آنکه بخواهد خدا اوست اهل پرهیزکاری و اهل آمرزیدن‌"
        }
    ]
}