{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "سوگند به ستاره گاهی که فرود آید"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "نه گمراه شد یار شما و نه گم گشت‌"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "و نه سخن گوید از روی هوس‌"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "نیست آن جز سروشی که وحی شود"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "بیاموختش کسی که سخت‌نیروها است‌"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "نیرومندی پس استوار شد"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "و او است بر افق فراتر"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "سپس نزدیک شد پس فرود آمد"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "تا شد اندازه پهنای دو کمان یا نزدیکتر"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "پس وحی فرستاد بسوی بنده خویش آنچه وحی فرستاد"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "دروغ نگفت دل آنچه را دید"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "آیا ستیزه کنید با او بر آنچه می‌بیند"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "و هر آینه دید او را باری دیگر"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "نزد درخت سدرة المنتهی‌"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "که نزد آن است بهشت جایگاه‌"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "گاهی که پوشانید سدره را آنچه پوشانید"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "نلغزید دیده و نه سرکشی کرد"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "همانا دید از آیتهای پروردگار خویش بزرگتر را"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "آیا دیدید شما لات و عزّی‌"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "و منوة سیّمین دیگر را"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "آیا شما را است نرینه و او را است مادینه‌"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "این است آن هنگام بخش‌کردنی ناهنجار"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "نیست آن مگر نامهائی که نامیدید آنها را شما و پدران شما نفرستاده است خدا بدانها فرمانروائیی پیروی نکنند جز گمان را و آنچه هوس کند دلها و هر آینه بیامدشان از پروردگارشان راهنما"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "یا انسان را است آنچه آرزو کند"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "پس خدا را است انجام و آغاز"
        }
    ]
}