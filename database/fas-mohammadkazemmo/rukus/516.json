{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "سوگند به فرستادگان پیاپی (انبوه چون یال اسب)"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "پس تندوزندگانی از بادها وزیدنی تند"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "و بگسترانندگان گسترانیدنی‌"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "پس به جداکنندگان جداکردنی‌"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "پس با فکنندگان ذکر"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "بهانه‌ای یا بیمی را"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "که آنچه وعده داده شوید فرودآینده است‌"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "پس گاهی که ستارگان نابود شوند"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "و گاهی که آسمان شکافته شود"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "و گاهی که کوه‌ها پراکنده شوند"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "و گاهی که فرستادگان وقت داده شوند"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "برای چه روزی پس انداخته شده است‌"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "برای روز جداشدن‌"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "و ندانستد چیست روز جداشدن‌"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "آیا نابود نساختیم پیشینیان را"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "پس پیرو کردیمشان پسینیان را"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "چنین کنیم به گنهکاران‌"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "آیا نیافریدیمتان از آبی خوار و زبون‌"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "پس نهادیمش در آرامگهی جایدار"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا اندازه دانسته‌"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "پس اندازه نهادیم پس چه خوبند اندازه‌نهان‌"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "آیا نگردانیدیم زمین را فراگیرنده‌"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "زندگان را و مردگان را"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "و نهادیم در آن لنگرهائی افراشته و نوشانیدیمتان آبی گوارا"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "بروید بسوی آنچه بودید بدان تکذیب می‌کردید"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "بروید بسوی سایه سه شعبه‌"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "که نه سایه افکن است و نه بی‌نیاز کند از شراره آتش‌"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "پرتاب کند همانا شراره‌هائی چون کاخ‌"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گوئیا آن است اشتری زردفام‌"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "این است روزی که سخن نگویند"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "و نه دستور داده شوند تا بهانه آرند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "وای در آن روز برای تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "این است روز جداکردن گردآوردیم شما را و پیشینیان‌"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "اگر شما را است نیرنگی پس آهنگم کنید"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "وای در آنروز برای تکذیب‌کنندگان‌"
        }
    ]
}