{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "همانا درخت زَقّوم‌"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "خوراک گنهکار است‌"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "چون آهن گداخته جوشد در شکمها"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "بسان جوشیدن آب جوشان‌"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "بگیریدش پس بکشیدش به میان دوزخ‌"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "پس بریزید بر سرش از شکنجه آب جوشان‌"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "بچش که توئی همانا آن مهتر گرامی‌"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "این است آنچه بودید در آن شکّ می‌کردید"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "همانا پرهیزکارانند در جایگهی آرام‌"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "در باغها و چشمه‌سارهائی‌"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "پوشند از سُندس و اِستَبرق روی به روی‌"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "بدینگونه و همسر آوردیمشان به حور عین‌"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "خوانند در آن به هر میوه‌ای ایمن‌شدگان‌"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "نچشند در آن مرگ را جز مرگ نخستین و نگهداشت ایشان را از عذاب دوزخ‌"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "فضلی از پروردگار تو این است آن رستگاری بزرگ‌"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "جز این نیست که روانش ساختیم بر زبانت شاید یادآور شوند"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "پس منتظر باش که ایشانند هر آینه منتظران‌"
        }
    ]
}