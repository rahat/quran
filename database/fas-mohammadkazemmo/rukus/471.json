{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "پس سوگند نخورم به فرودگاه‌های ستارگان‌"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "و همانا آن است سوگندی اگر بدانید گران‌"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "همانا آن است قرآنی گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "در نامه‌ای پوشیده‌"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "دست بدان نسایند جز پاک‌شدگان‌"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "فرستادنی از پروردگار جهانیان‌"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "پس آیا بدین داستان شمائید چاپلوسان‌"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "و قرار دهید روزی خود را که تکذیب کنید"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "پس چرا گاهی که رسد به گلوگاه‌"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "و شمائید آن هنگام نگرانان‌"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "و مائیم نزدیکتر بدو از شما و لیکن نبینید"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "پس چرا اگر هستید شما ناکیفرشدگان‌"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "بازش گردانید اگر هستید راستگویان‌"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "پس اگر بود از مقرّبان‌"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "پس آرامشی و روزیی و بهشت نعمت‌"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "و اما اگر بود از یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "پس سلامی تو را از یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "و اما اگر بود از تکذیب‌کنندگان گمراهان‌"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "پس پیشکشی از آب جوشان‌"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "و چشیدن دوزخ‌"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "همانا این است حقّ یقین‌"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "پس تسبیح گوی به نام پروردگار بزرگ خویش‌"
        }
    ]
}