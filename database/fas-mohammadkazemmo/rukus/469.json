{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "گاهی که فرود آید فرودآینده‌"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "نیست فرود آمدنش را دروغی‌"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "فرودآرنده و بالابرنده‌"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "گاهی که بلرزد زمین لرزیدنی‌"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و رانده شوند کوه‌ها راندنی‌"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "پس گردند گردی پراکنده‌"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شوید گروه‌هایی سه‌گانه‌"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "پس یاران راست چیست یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و یاران چپ چیست یاران چپ‌"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و پیش‌آهنگان (پیشی‌گیرندگان) آن پیش‌آهنگان‌"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "آنانند نزدیک‌گشتگان‌"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در بهشتهای نعمتها"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "پاره‌ای از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از آیندگان‌"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهائی بافته‌"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "تکیه‌کنندگان بر آنها روی به روی‌"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "بگردند بر ایشان پسرانی جاودانان‌"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با جامها و صراحیها و جامی از باده‌نمایان‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "نه درد سر گیرند از آن و نه از خرد افتند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌ای از آنچه برگزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغی از آنچه هوس کنند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و زنان سفیداندام فراخ‌چشمان‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "مانندگان مروارید پوشیده‌"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "پاداشی بدانچه بودند می‌کردند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "نشوند در آن بیهوده و نه گناه بستن را"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "جز گفتار سلامی سلامی‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و یاران راست چه یاران راستی‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "زیر درخت سدری بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزی به هم پیچیده‌"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه‌ای کشیده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه‌ای فراوان‌"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "نابریده و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و زنانی افراشته (بلندبالا)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "همانا پدید آوردیمشان پدید آوردنی‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "پس گردانیدیمشان شوی‌نادیدگانی‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "شوهر دوستانی همسالان‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "برای یاران راست‌"
        }
    ]
}