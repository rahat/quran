{
    "rukus": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "خدای مهربان‌"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "بیاموخت قرآن‌"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "بیافرید انسان‌"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "بیاموختش بیان‌"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "مهر و ماه به شمارند"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "و ستاره و درخت سجده‌کنانند"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "و آسمان را برافراشت و بنهاد ترازو را"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "که سرکشی نکنید در سنجش‌"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "و بپای دارید سنجش را به داد و نکاهید سنجش را"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "و زمین را بنهادش برای جهانیان‌"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "در آن است میوه و خرمابن دارنده شکوفه‌ها"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "و دانه دارنده برگ و روزی‌"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "آفرید انسان را از گل خشکی مانند سفال پخته‌"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "و آفرید پری را از آمیخته‌ای از آتش‌"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "پروردگار خاوران و پروردگار باختران‌"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "آمیخت دو دریا را به هم رسند"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "که میان آنها است فاصله (دیواری) تا ستم نکنند"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "برون آید از آنها مروارید و مرجان‌"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "و او را است رونده‌هائی برافراشته در دریا مانند کوه‌ها"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "پس آیا به کدامین نعمتهای پروردگار شما (ای دو کس) تکذیب می‌کنید"
        }
    ]
}