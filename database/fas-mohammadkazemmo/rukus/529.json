{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "تسبیح گوی نام پروردگار خویش را آن برتر"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "آنکه آفرید پس راست کرد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آنکه تقدیر کرد پس هدایت کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آنکو برون آورد چراگاه را"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پس گردانیدش خشک سیاه‌"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زود است بخوانیم بر تو (خوانا گردانیمت) تا فرامواش نکنی‌"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خواهد خدا که او می‌داند آشکار را و آنچه نهان شود"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و روان گردانیمت بسوی آسانی‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس یادآوری کن اگر سود دهد یادآوردن‌"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "زود است یادآورد آنکه می‌ترسد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و دوری گزیندش بدبخت‌تری‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "که می‌چشد آتش بزرگتر را"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "پس نمیرد در آن و نه زنده شود"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "همانا رستگار شد آنکه پاکی جست‌"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و یاد کرد نام پروردگارش را پس نماز گزارد"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلکه برمی‌گزینید زندگانی دنیا را"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "و آخرت بهتر است و پایدارتر"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "همانا این است در نامه‌های نخستین‌"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "نامه‌های ابراهیم و موسی‌"
        }
    ]
}