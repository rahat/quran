{
    "pages": [
        {
            "chapter": 51,
            "verse": 52,
            "text": "بدینسان نیامد آنان را که پیش از ایشان بودند فرستاده‌ای جز آنکه گفتند جادوگری است یا دیوانه‌"
        },
        {
            "chapter": 51,
            "verse": 53,
            "text": "آیا اندرز دادند یکدیگر را بدان بلکه ایشانند گروهی گردنکشان‌"
        },
        {
            "chapter": 51,
            "verse": 54,
            "text": "پس روی برتاب از ایشان که نیستی تو نکوهیده‌"
        },
        {
            "chapter": 51,
            "verse": 55,
            "text": "و یادآوری کن که یادآوری سود دهد به مؤمنان‌"
        },
        {
            "chapter": 51,
            "verse": 56,
            "text": "و نه آفریدم پری و آدمی را مگر تا پرستشم کنند"
        },
        {
            "chapter": 51,
            "verse": 57,
            "text": "نخواهم از آنان روزیی و نخواهم که مرا خورانند"
        },
        {
            "chapter": 51,
            "verse": 58,
            "text": "همانا خدا است روزی‌دهنده توانای نیرومند"
        },
        {
            "chapter": 51,
            "verse": 59,
            "text": "هرآینه آنان را که ستم کردند بهره‌ای است مانند بهره یارانشان پس شتاب نجویند از من‌"
        },
        {
            "chapter": 51,
            "verse": 60,
            "text": "پس وای از برای آنان که کفر ورزیدند از روز ایشان که وعده داده شوند"
        },
        {
            "chapter": 52,
            "verse": 1,
            "text": "سوگند به طور"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "و نامه نوشته‌"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "در پوستی گسترده‌"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "و خانه آبادان‌"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "و پوش افراشته‌"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "و دریای آکنده‌"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "همانا عذاب پروردگار تو است فرودآینده‌"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "نیستش دورکننده‌"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "روزی که خزد آسمان خزیدنی‌"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "و روان شوند کوه‌ها روان شدنی‌"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "پس وای در آن روز بر تکذیب‌کنندگان‌"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "آنان که در سرگرمیی بازی کنند"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "روزی که رانده شوند بسوی آتش دوزخ راندنی‌"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "این است آن آتش که بودید بدان تکذیب می‌کردید"
        }
    ]
}