{
    "pages": [
        {
            "chapter": 53,
            "verse": 45,
            "text": "و آنکه او آفرید دو جفت را نر و ماده‌"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "از چکّه آبی گاهی که ریخته گردد"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "و آنکه بر او است پدیدآوردن دیگر"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "و آنکه او بی‌نیاز کرد و نگاه داشت‌"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "و آنکه او است پروردگار شعری (ستاره است)"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "و آنکه او نابود ساخت عاد نخستین را"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "و ثمود را بجای نگذارد"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "و قوم نوح را از پیش که ایشان بودند ستمگرتر و سرکش‌تر"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "و باژگون‌شدگان را فرود آورد"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "پس پوشانیدش آنچه پوشانید"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "پس به کدام نعمتهای پروردگار خویش می‌ستیزی‌"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "این است بیم‌دهنده از بیم‌دهندگان پیشین‌"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "نزدیک گشت نزدیک شونده‌"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "نیستش جز خدا گشاینده‌"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "آیا از این داستان شگفت مانید"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "و خندید و نگریید"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "و شمائید ناآگهان‌"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "پس سجده کنید برای خدا و ستایش کنید"
        },
        {
            "chapter": 54,
            "verse": 1,
            "text": "نزدیک شد ساعت و بشکافت ماه‌"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "و اگر بینند آیتی روی برتابند و گویند جادوئی است گذران (یا نیرومند)"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "و تکذیب کردند و پیروی کردند هوسهای خویش را و هر کاری است پایدار (جایگزین)"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "و هر آینه بیامدشان از داستانها آنچه در آن است بازداشتی‌"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حکمتی است رسا پس بی‌نیاز نکنند ترسانندگان‌"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "پس روی برتاب از ایشان روزی که خواند خواننده به چیزی ناپسند"
        }
    ]
}