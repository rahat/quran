{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "پس نیستش امروز در اینجا دوستی‌"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "و نه خوراکی جز از چرک دوزخیان‌"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "نخورندش جز گنهکاران‌"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس سوگند یاد نمی‌کنم بدانچه بینید"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و آنچه نبینید"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "که آن است همانا سخن پیمبری گرامی‌"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و نیست گفتار شاعری به کمی ایمان آورید"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و نه گفتار پیش‌گوئی به کمی یاد آورید"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "فرستادنی است از پروردگار عالمیان‌"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر می‌بست بر ما پاره سخنان را"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "هر آینه می‌گرفتیم از او به دست راست‌"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "و سپس می‌بریدیم از او رگ گردن را"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "و نبودش کسی از شما نگهدارنده‌"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "و همانا آن است یادآوریی برای پرهیزکاران‌"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و همانا دانیم که از شما است تکذیب‌کنندگان‌"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و همانا آن است دریغی بر کافران‌"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و همانا آن است در حقّ یقین‌"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس تسبیح گوی به نام پروردگارت آن بزرگ‌"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "پرسید پرسش‌کننده‌ای از عذابی فرودآینده‌"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "برای کافران نیستش بازدارنده‌"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "از خدا خداوند نردبانها (معراجها)"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "بالاروند فرشتگان و روح بسویش در روزی که اندازه آن است پنجاه هزار سال‌"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "پس شکیبائی کن شکیبائی نکو"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "که آنان بینندش دور"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "و ما بینیمش نزدیک‌"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "روزی که گردد آسمان چون روغن گداخته‌"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "و گردند کوه‌ها چون پشم‌"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "و نپرسد دوستی دوستی را"
        }
    ]
}