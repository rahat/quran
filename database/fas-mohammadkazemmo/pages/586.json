{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "گاهی که خورشید بی‌فروغ گردد"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و گاهی که ستارگان تیره شوند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و گاهی که کوه‌ها رانده شوند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و گاهی که اشتران آبستن (یا آبستنان) رها کرده شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و گاهی که وحشیان گردآورده شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و گاهی که دریاها به هم آمیخته شوند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و گاهی که نفوس جفت کرده شوند"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و گاهی که گورشده پرسیده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "به کدام گناه کشته شد"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و گاهی که نامه‌ها گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و گاهی که آسمان برکنده شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و گاهی که دوزخ افروخته شود"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و گاهی که بهشت آماده (یا نزدیک) شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "بداند هر کسی آنچه احضار کرده است‌"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند نیارم به فروروندگان‌"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "روندگان نهان‌شدگان‌"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "و شب‌گاهی که تیرگیش پشت کند"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و بامدادگاهی که بدرخشد"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "که آن است همانا گفتار فرستاده گرامی‌"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "توانگری نزد خداوند عرش ارجمند (یا سخن روائی)"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "فرمانروائی آنجا امینی‌"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و نیست یار شما دیوانه‌"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و هر آینه بدیدش در اُفقی آشکار"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و نیست او بر ناپیدا بخیل‌"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و نیست آن سخن شیطان رانده‌شده‌"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس کجا می‌روید"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "نیست آن جز یادآوریی برای جهانیان‌"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "برای آنکه خواهد از شما که راستی گزیند (یا پایداری کند)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و نخواهید جز آنکه بخواهد خدا پروردگار جهانیان‌"
        }
    ]
}