{
    "pages": [
        {
            "chapter": 74,
            "verse": 48,
            "text": "پس سود ندهدشان شفاعت شفاعتگران‌"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "پس چه شودشان که از یاد آوردند روی گردانان‌"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گوئیا آنانند خران رمنده‌"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "که گریخته‌اند از شیری ژیان‌"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلکه خواهد هر مردی از ایشان که داده شود نامه‌هائی گشاده (پهناور)"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "نه چنین است بلکه بیم ندارند آخرت را"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "نه چنین است همانا آن یادآوریی است‌"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "که هر که خواهد یاد آوردش‌"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "و یادآور نشوند جز آنکه بخواهد خدا اوست اهل پرهیزکاری و اهل آمرزیدن‌"
        },
        {
            "chapter": 75,
            "verse": 1,
            "text": "سوگند یاد نکنم به روز رستاخیز"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "و نه سوگند آرم به نهاد (به روان) سرزنشگر"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "آیا پندارد انسان که هرگز گرد نیاریم استخوانهایش را"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بلی توانائیم بر آنکه راست کنیم سرانگشتانش را"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بلکه خواهد انسان که باز کند پیش رویش را"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "پرسد کی است روز قیامت‌"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "تا گاهی که بدرخشد دیده‌"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "و بگیرد ماه‌"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "و گردآورده شوند مهر و ماه‌"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "گوید انسان در آن روز کجا است گریزگاه‌"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "نه چنین است نیست گریزگاه‌"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "بسوی پروردگار تو است در آنروز آرامشگاه‌"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "آگاه شود انسان در آن روز بدانچه پیش فرستاد و پس انداخت‌"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بلکه انسان است بر جان خویشتن بینا"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "و هر چند بیفکند بهانه‌های خویش را"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "نجنبان بدان زبانت را تا بشتابی بدان‌"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "که همانا بر ما است گردآوردنش و خواندنش‌"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "تا گاهی که خوانیمش پس پیروی کن از خواندنش‌"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "سپس همانا بر ما است بیانش‌"
        }
    ]
}