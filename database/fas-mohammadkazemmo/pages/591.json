{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و به شب درآینده‌"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و چه دانستت چیست شب درآینده‌"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن ستاره تابنده‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "نیست کسی جز بر او است نگهبانی‌"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس بنگرد انسان از چه شد آفریده‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "آفریده شد از آبی جهنده‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "که برون آید از میان کمر و استخوانهای سینه‌"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "همانا او است بر بازگردانیدنش توانا"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزی که فاش شوند رازهای درون‌"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس نیستش نیروئی و نه یاوری‌"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان دارای برگشت یا باران‌"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و به زمین دارای شکاف‌"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "که آن است همانا گفتاری جداسازنده‌"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و نیست آن یاوه (شوخی)"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "همانا ایشان نیرنگ آرند نیرنگی‌"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و نیرنگ آرم نیرنگی‌"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس مهلت ده کافران را مهلتشان ده اندکی‌"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "تسبیح گوی نام پروردگار خویش را آن برتر"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "آنکه آفرید پس راست کرد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آنکه تقدیر کرد پس هدایت کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آنکو برون آورد چراگاه را"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پس گردانیدش خشک سیاه‌"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زود است بخوانیم بر تو (خوانا گردانیمت) تا فرامواش نکنی‌"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خواهد خدا که او می‌داند آشکار را و آنچه نهان شود"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و روان گردانیمت بسوی آسانی‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس یادآوری کن اگر سود دهد یادآوردن‌"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "زود است یادآورد آنکه می‌ترسد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و دوری گزیندش بدبخت‌تری‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "که می‌چشد آتش بزرگتر را"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "پس نمیرد در آن و نه زنده شود"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "همانا رستگار شد آنکه پاکی جست‌"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و یاد کرد نام پروردگارش را پس نماز گزارد"
        }
    ]
}