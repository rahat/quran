{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "بگردند بر ایشان پسرانی جاودانان‌"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با جامها و صراحیها و جامی از باده‌نمایان‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "نه درد سر گیرند از آن و نه از خرد افتند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌ای از آنچه برگزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغی از آنچه هوس کنند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و زنان سفیداندام فراخ‌چشمان‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "مانندگان مروارید پوشیده‌"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "پاداشی بدانچه بودند می‌کردند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "نشوند در آن بیهوده و نه گناه بستن را"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "جز گفتار سلامی سلامی‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و یاران راست چه یاران راستی‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "زیر درخت سدری بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزی به هم پیچیده‌"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه‌ای کشیده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه‌ای فراوان‌"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "نابریده و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و زنانی افراشته (بلندبالا)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "همانا پدید آوردیمشان پدید آوردنی‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "پس گردانیدیمشان شوی‌نادیدگانی‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "شوهر دوستانی همسالان‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "برای یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "گروهی از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "و گروهی از بازماندگان‌"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "و یاران چپ چه یاران چپ‌"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "در آتش سوراخ‌کننده و آبی جوشان‌"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "و سایه‌ای از دود سیاه‌"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "نه خنک و نه گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "همانا ایشان بودند پیش از این هوسرانان‌"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "و بودند اصرار می‌ورزیدند بر گناه (یا پیمان‌شکنی) بزرگ‌"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "و بودند می‌گفتند آیا گاهی که مُردیم و شدیم خاکی و استخوانهائی آیا مائیم برانگیختگان‌"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "آیا و پدران ما پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "بگو همانا پیشینیان و پسینیان‌"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "گردآورده شوند بسوی وعده‌گاه روزی دانسته‌"
        }
    ]
}