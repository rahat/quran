{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "گاهی که آسمان بشکافد"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "و گاهی که ستارگان بپاشد (یا بریزد)"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "و گاهی که دریاها شکافته شود"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "و گاهی که گورها برانگیخته شود"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "داند کسی چه پیش فرستاده است و چه پس آورده است‌"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "ای انسان چه چیزت فریفت (یا چه فریفته تو را) به پروردگار کریمت‌"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "آنکه آفریدت پس راست آوردت پس معتدلت ساخت‌"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "به هر پیکری که خواست تو را پرداخت‌"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "نه چنین است بلکه تکذیب کنید به دین‌"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "و همانا بر شما است نگهبانانی‌"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "گرامیانی نویسندگانی‌"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "دانند آنچه کنید"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "همانا نیکانند در نعمتها"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "و همانا گنهکارانند در دوزخ‌"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "چشندش روز دین‌"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "و نیستند ایشان از آن ناپدیدان‌"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "و ندانی تو چیست روز دین‌"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "پس ندانی تو چیست روز دین‌"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "روزی که دارا نیست کسی برای کسی چیزی و کار در آن روز خدا را است‌"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "وای بر کم‌فروشان‌"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "آنان که هر گاه پیمایند بر مردم تمام بردارند"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "و هر گاه پیمایندشان یا سنجندشان کم دهند"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "آیا نپندارند که ایشان برانگیختگانند"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "برای روزی بزرگ‌"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "روزی که بپای خیزند مردم برای پروردگار جهانیان‌"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "نه چنین است همانا نامه گنهکاران است در سِجّین‌"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "و چه دانستت چیست سِجّین‌"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "نامه‌ای است نوشته‌"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "وای در آن روز بر تکذیب‌کنندگان‌"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "آنان که تکذیب کنند به روز دین‌"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "و تکذیب نکند بدان جز هر تجاوزگری گنهکار"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "که هر گاه خوانده شود بر او آیتهای ما گوید این است افسانه‌های پیشینیان‌"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "نه چنین است بلکه چیره گشت بر دلهای آنها بودند فراهم می‌کردند"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "نه چنین است همانا ایشانند از پروردگارشان آن روز راندگان‌"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "سپس ایشانند همانا چشندگان دوزخ‌"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "پس گفته شود این است آنچه بودید بدان تکذیب می‌کردید"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "نه چنین است همانا نامه نیکان است در علّیّین‌"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "و چه دانستت چیست علّیّون‌"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "نامه نوشته‌"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "که گواهیش دهند نزدیکان‌"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "همانا نیکانند در نعمتها"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "بر بالشها (یا تختها) نگران‌"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "بشناسی در چهره‌شان خرمی نعمتها"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "نوشاینده شوند از جامی مُهرزده‌"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "مُهر آن است مشک و بدین پس باید بگروند گروندگان‌"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "و آمیزش آن است از تَسنیم‌"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "چشمه‌ای که نوشند از آن نزدیکان‌"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "همانا آنان که گنهکاراند بودند بر آنان که ایمان آوردند خنده‌زنان‌"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "و هر گاه می‌گذشتند بر آنان به چشم طعن و استهزاء بنگرند"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "و هر گاه بازمی‌گشتند بسوی خاندان خویش بازمی‌گشتند لبخندزنان‌"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "و هر گاه می‌دیدندشان می‌گفتند همانا اینانند گمراهان‌"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "و فرستاده نبودند بر ایشان نگهبانان‌"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "پس امروز آنان که ایمان آوردند به کافرانند خنده‌زنان‌"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "بر بالشهایند نگران‌"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "آیا پاداش داده شدند کفّار آنچه را بودند می‌کردند"
        }
    ]
}