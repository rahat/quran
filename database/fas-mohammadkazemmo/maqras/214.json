{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "گاهی که فرود آید فرودآینده‌"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "نیست فرود آمدنش را دروغی‌"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "فرودآرنده و بالابرنده‌"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "گاهی که بلرزد زمین لرزیدنی‌"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و رانده شوند کوه‌ها راندنی‌"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "پس گردند گردی پراکنده‌"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شوید گروه‌هایی سه‌گانه‌"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "پس یاران راست چیست یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و یاران چپ چیست یاران چپ‌"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و پیش‌آهنگان (پیشی‌گیرندگان) آن پیش‌آهنگان‌"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "آنانند نزدیک‌گشتگان‌"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در بهشتهای نعمتها"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "پاره‌ای از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از آیندگان‌"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهائی بافته‌"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "تکیه‌کنندگان بر آنها روی به روی‌"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "بگردند بر ایشان پسرانی جاودانان‌"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با جامها و صراحیها و جامی از باده‌نمایان‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "نه درد سر گیرند از آن و نه از خرد افتند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌ای از آنچه برگزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغی از آنچه هوس کنند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و زنان سفیداندام فراخ‌چشمان‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "مانندگان مروارید پوشیده‌"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "پاداشی بدانچه بودند می‌کردند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "نشوند در آن بیهوده و نه گناه بستن را"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "جز گفتار سلامی سلامی‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و یاران راست چه یاران راستی‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "زیر درخت سدری بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزی به هم پیچیده‌"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه‌ای کشیده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه‌ای فراوان‌"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "نابریده و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و زنانی افراشته (بلندبالا)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "همانا پدید آوردیمشان پدید آوردنی‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "پس گردانیدیمشان شوی‌نادیدگانی‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "شوهر دوستانی همسالان‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "برای یاران راست‌"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "گروهی از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "و گروهی از بازماندگان‌"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "و یاران چپ چه یاران چپ‌"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "در آتش سوراخ‌کننده و آبی جوشان‌"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "و سایه‌ای از دود سیاه‌"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "نه خنک و نه گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "همانا ایشان بودند پیش از این هوسرانان‌"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "و بودند اصرار می‌ورزیدند بر گناه (یا پیمان‌شکنی) بزرگ‌"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "و بودند می‌گفتند آیا گاهی که مُردیم و شدیم خاکی و استخوانهائی آیا مائیم برانگیختگان‌"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "آیا و پدران ما پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "بگو همانا پیشینیان و پسینیان‌"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "گردآورده شوند بسوی وعده‌گاه روزی دانسته‌"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "سپس شما ای گمراهان تکذیب‌کنندگان‌"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "همانا خورنده‌اید از درختی از زقّوم‌"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "پس آکنده‌اید از آن شکمها را"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "پس آشامنده‌اید بر آن از آب جوشان‌"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "پس نوشنده‌اید نوشیدن اشتران تشنگی‌زده‌"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "این است پیشکش ایشان روز دین‌"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "ما آفریدیمتان پس چرا تصدیق نمی‌کنید"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "آیا دیدید آنچه را می‌ریزید (آب منی)"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "آیا شما می‌آفریدش یا مائیم آفرینندگان‌"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "ما نهادیم میان شما مرگ را و نیستیم پیشی گرفته‌شدگان‌"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "و آنکه تبدیل کنیم مانندگان شما را و پدید آوریمتان در آنچه نمی‌دانید"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "و همانا دانستید پیدایش نخستین را پس چرا یادآور نشوید"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "آیا دیدید آنچه را می‌کارید"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "آیا شما کشتش کنید یا مائیم کشت آوران‌"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "اگر خواهیم گردانیمش خشک پس بمانید زمزمه‌کنان‌"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "که مائیم زیانکاران‌"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بلکه مائیم ناکامان‌"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "آیا دیدید آبی را که نوشید"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "آیا شما فرودش آوردید از ابر یا مائیم فرودآورندگان‌"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "اگر می‌خواستیم می‌گردانیدیمش تلخکام پس چرا سپاس نگزارید"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "آیا دیدید آتشی را که افروزید"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "آیا شما پدید آوردید درختش را یا مائیم پدیدآرندگان‌"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "ما گردانیدیمش یادآوری و بهره‌ای برای نیازمندان‌"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "پس تسبیح گوی به نام پروردگار بزرگ خویش‌"
        }
    ]
}