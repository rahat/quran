{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "پس آیا نداند گاهی که انگیخته شود آنچه در گورها است‌"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "و فراهم شود آنچه در سینه‌ها است‌"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "که پروردگار ایشان است بدیشان آگاه‌"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "آن کوبنده‌"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چیست کوبنده‌"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و چه دانستت چیست کوبنده‌"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزی که شوند مردم چون پروانه‌های پراکنده‌"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و شوند کوه‌ها مانند پشم زده‌"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "پس اما آنکه سنگین آید سنجشهایش (ترازوهایش)"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "پس او است در زندگی پسندیده‌"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما آنکه سبک گردد ترازوهایش‌"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "پس مادر اوست هاویه‌"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و ندانستت چیست آن‌"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشی است سوزنده‌"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "بفریفت شما را (سرگرم ساخت) فزونی جستن‌"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا رسیدید به گورستان‌"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "نه چنین است زود است بدانید"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "پس نه چنین است زود است بدانید"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "نه چنین است اگر بدانید دانستن یقین‌"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "هر آینه ببینید البته دوزخ را"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "سپس ببینیدش البته عین یقین (یقین نمایان)"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "سپس پرسش شوید همانا در آن روز از نعمتها"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "سوگند به عصر (روزگار بازپسین)"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "که همانا انسان است در زیانکاری‌"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "مگر آنان که ایمان آوردند و کردار شایسته کردند و سفارش کردند به حقّ (به درستی) و سفارش کردند به شکیب‌"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "وای بر هر نکوهشگری عیب‌جوی‌"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "آنکه گردآورد مالی را و شمردش‌"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "پندارد که مالش جاودان داردش‌"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "نه چنین است همانا انداخته شود در حُطَمه‌"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "و ندانستت چیست حُطَمه‌"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "آتش خدای افروخته‌"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "که چیره گردد بر دلها"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "همانا آن است بر ایشان افروخته (یا پوشیده)"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "در ستونهای کشیده‌"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "آیا ندیدی چه کرد پروردگار تو به یاران (یا خداوندان) فیل‌"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "آیا نگردانید نیرنگ آنان را در گم‌گشتگی‌"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "و فرستاد بر ایشان مرغانی گروه گروه‌"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "می‌افکندند بر ایشان (پرتاب می‌کردند) سنگی را از سجّیل‌"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "پس گردانیدشان مانند خوشه (یا برگی) خورده‌شده‌"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "برای جان دادن (یا الفت‌گرفتن) قریش‌"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "الفت ایشان به کوچیدن زمستان و تابستان‌"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس باید پرستش کنند پروردگار این خانه را"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "که خورانیدشان پس از گرسنگی و ایمنشان ساخت پس از ترس‌"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آیا دیدی آن را که تکذیب کند به دین‌"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "پس آن است که می‌راند یتیم را"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و ترغیب نکند بر خوراک بینوا"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس وای بر نمازگزاران‌"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "آنان که از نماز خویشند غفلت‌کنندگان‌"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "آنان که خودنمائی کنند"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و بازدارند زکات را (یا خیر را)"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "همانا ارزانی داشتیمت کوثر"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس نمازگزار برای پروردگار خویش و قربان کن (یا سجود و رکوع کن)"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "همانا بدخواه تو است دنباله‌بریده‌"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "بگو ای گروه کافران‌"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "نپرستم آنچه را پرستید"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "و نه شما پرستندگانید آنچه را پرستم‌"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "و نه منم پرستنده آنچه پرستش کردید"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "و نه شما پرستندگانید آنچه را پرستم‌"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "شما را است دینتان و مرا است دینم‌"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "گاهی که آید یاری خدا و پیروزی‌"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "و بینی مردم را درآیند به دین خدا گروه گروه‌"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "پس تسبیح گوی به سپاس پروردگار خویش و آمرزش خواهش که او است همانا آمرزگار"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "بریده باد دستهای ابی‌لهب و بریده باد"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "بی‌نیاز نکرد از او مالش و آنچه فراهم کرد"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "زود است بچشد آتشی شعله‌ور"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "و زن او بردارنده هیزم‌"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "در گردنش بندی است از لیف خرما"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "بگو او است خدای یکتا"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "خداوند است صمد"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "نه زائید و نه زاده شده‌"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و نبودش همتا کسی‌"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "بگو پناه برم به پروردگار بامداد (شکاف صبح)"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از بدی آنچه آفرید"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از بدی تاریکی گاهی که فراگیرد (یا فرورود)"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از بدی زنان دمنده در گره‌ها"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "و از بدی حسود گاهی که حسد ورزد"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "بگو پناه به پروردگار مردم‌"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "پادشاه مردم‌"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "خدای مردم‌"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از بدی وسوسه‌کننده نهان شونده‌"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "آنکه وسوسه کند در سینه‌های مردم‌"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "از پریان و مردم‌"
        }
    ]
}