{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "از چه چیزند پرسش‌کنان‌"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "از داستان (آگهی) بزرگ‌"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "آنکه آنانند در آن اختلاف‌کنان‌"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "نه چنین است زود است بدانند"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "پس نه چنین است زود است بدانند"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آیا نگردانیدیم زمین را آرامگاهی‌"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و کوه‌ها را میخهائی‌"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و آفریدیم شما را جفتهائی‌"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و گردانیدیم خواب شما را بیهشی (یا آسایشی)"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و گردانیدیم شب را پوشاکی‌"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و گردانیدیم روز را روزی‌گهی‌"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و بنیاد نهادیم فراز شما هفتگانه‌ای استوار"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و نهادیم چراغی درخشان‌"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "و فرستادیم از فشرده‌ها آبی ریزان‌"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا برون آریم بدان دانه و رستنی‌"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و باغستانی پیچاپیچ‌"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "همانا روز جداشدن است وعده‌گاهی‌"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزی که دمیده شود در صور پس آیند گروه‌هائی‌"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "و گشوده شود آسمان پس بگردد درهائی‌"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و رانده شوند کوه‌ها پس شوند سرابی‌"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "همانا دوزخ است کمینگاهی‌"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "برای سرکشان بازگشتگاهی‌"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "ماندگانند در آن سالهائی‌"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "نچشند در آن خنکی و نه نوشابه‌ای‌"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر آبی جوشان و چرکی‌"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "کیفری برابر"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "که بودند ایشان امید نداشتند حسابی‌"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و تکذیب کردند آیتهای ما را تکذیبی‌"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "و هر چیزی را فراآوردیم در نامه‌ای‌"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "پس بچشید که هرگز نیفزائیم شما را جز عذابی‌"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "همانا برای پرهیزکاران است برخوردارگاهی‌"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "باغچه‌هائی و تاکهائی‌"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "و آنان پستان برآمده همسالانی‌"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "و جامی لبریز"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "نشنوند در آن یاوه و نه تکذیبی‌"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "پاداشی از پروردگارت بخششی به شمار"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "پروردگار آسمانها و زمین و آنچه میان آنها است خداوند مهربان که دارا نیستند از او خطابی (سخن‌گفتنی)"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "روزی که بپای ایستند روح و فرشتگان به صفی سخن نگویند جز آنکو دستوری دهدش خداوند مهربان و گوید درستی‌"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "آن است روز حقّ تا هر که خواهد برگیرد بسوی پروردگار خویش بازگشتگاهی‌"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "همانا بیم دادیم شما را از عذابی نزدیک روزی که بنگرد مرد آنچه را پیش فرستاده است دو دستش و گوید کافر کاش می‌بودم خاکی‌"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "سوگند به برکنندگان به قوّت‌"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "و به کشندگان کشیدنی (یا جهندگاه جهشی)"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "و به شناوری‌کنان شناوریی‌"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "پس پیشی‌گیرندگان پیشی‌گرفتنی‌"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "پس کارپردازان کاری‌"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "روزی که بلرزد لرزنده‌"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "از پیش آید پی درآینده‌"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "دلهائی است در آن روز هراسان‌"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "دیدگان آنها است سرافکنده‌"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "گویند آیا مائیم بازگردانیده در گور (یا در حال نخستین)"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "آیا گاهی که گردیدیم استخوانهائی پوسیده‌"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "گویند آن است آن هنگام بازگشتی زیانمند"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "پس جز این نیست که خروشی است یگانه‌"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "ناگهان ایشانند به روی زمین‌"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "آیا بیامدت داستان موسی‌"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "گاهی که بانگ دادش پروردگارش بر درّه مقدّس طوی‌"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "برو بسوی فرعون که او سرکشی کرد"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "پس بگو آیا تو را است بسوی آنکه پاکی جوئی‌"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "و رهبریت کنم بسوی پروردگارت پس بترسی‌"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "پس نمایاندش آیت بزرگ را"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "پس تکذیب کرد و سرپیچید"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "سپس پشت کرد می‌دوید"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "پس گردآورد پس برخواند"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "پس گفت منم پروردگار بزرگتر شما"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "پس گرفتش خدا به کیفر انجام و آغاز"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "همانا در این است عبرتی برای آنکه بترسد"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "آیا شما سخت‌ترید در آفرینش یا آسمان که ساختش‌"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "برافراشت پوشش را پس بیاراستش‌"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "و تاریک ساخت شبش را و برآورد روزش‌"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "و زمین را از آن پس گسترانیدش‌"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "برون آورد از آن آبش را و چراگاهش‌"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "و کوه‌ها را لنگر گردانیدش‌"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "بهره‌مندیی برای شما و برای دامهای شما"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "پس گاهی که آید فرودآینده‌ای بزرگتر"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "روزی که یاد آورد انسان آنچه را کوشیده است‌"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "و آشکار گردد دوزخ برای هر که بیند"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "پس اما آنکه سرپیچید"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "و زندگانی دنیا را برگزید"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "همانا دوزخ است جایگاهش‌"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "و امّا آنکه بترسد جایگاه پروردگار خویش را و بازدارد خویشتن را از هوسها"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "همانا بهشت است جایگاهش‌"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "پرسندت از ساعت کی است لنگرگاهش‌"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "در چیستی تو از یادآوردنش‌"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "بسوی پروردگار تو است پایانش‌"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "جز این نیست که توئی ترساننده آنکه بترسدش‌"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "گوئیا ایشان روزی که بینندش نماندند جز شبی یا روزش‌"
        }
    ]
}