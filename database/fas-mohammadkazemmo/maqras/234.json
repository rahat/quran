{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "روی درهم کشید و پشت کرد"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "که آمدش کور"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و چه دانستت شاید او پاکی جوید"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا یادآور شود پس سود دهدش یادآوردن‌"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آنکه بی‌نیازی جست‌"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تواش پذیرفتی‌"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و نیست بر تو که او پاکی نجوید"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آنکه بیامدت می‌دوید"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "و او می‌ترسید"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او سرگرمی جستی‌"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "نه چنین است همانا آن است یادآوریی‌"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "که هر که خواهد یاد آوردش‌"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در نامه‌هایی گرامی‌"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "برافراشته پاک‌شده‌"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دستهای پیام‌آورانی‌"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "گرامیانی نیکانی‌"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "کشته باد انسان چه ناسپاس است‌"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "از چه چیز آفریدش‌"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه بیافریدش پس مقدّر داشتش (اندازه نهادش)"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه را آماده ساختش‌"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پس میرانیدش و به گور بردش‌"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هر گاه خواست برون آردش‌"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "نه چنین است هنوز نگذارد آنچه فرمودش‌"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس بنگرد انسان بسوی خوراکش‌"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "که ریختیم ما آب را ریزشی‌"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پس شکافتیم زمین را شکافتنی‌"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پس رویانیدیم در آن دانه‌"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگوری و خرمائی‌"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زیتونی و خرمابنی‌"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغچه‌هائی پیچیده‌"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و میوه‌ای و چمنی‌"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "بهره‌ای برای شما و برای دامهای شما"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس گاهی که آید خروش کرسازنده‌"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی که گریزد مرد از برادرش‌"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و مادرش و پدرش‌"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و همسرش و فرزندانش‌"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "هر مردی از ایشان را است در آن روز کاری که به خود واداردش‌"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "چهره‌هایی است در آن روز گشوده‌"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان شادان‌"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و چهره‌هایی در آن روز بر آنها است گردی‌"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "دستخوش سازدش پریشانی‌"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "آنانند کافران پرده‌دران‌"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "گاهی که خورشید بی‌فروغ گردد"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و گاهی که ستارگان تیره شوند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و گاهی که کوه‌ها رانده شوند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و گاهی که اشتران آبستن (یا آبستنان) رها کرده شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و گاهی که وحشیان گردآورده شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و گاهی که دریاها به هم آمیخته شوند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و گاهی که نفوس جفت کرده شوند"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و گاهی که گورشده پرسیده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "به کدام گناه کشته شد"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و گاهی که نامه‌ها گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و گاهی که آسمان برکنده شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و گاهی که دوزخ افروخته شود"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و گاهی که بهشت آماده (یا نزدیک) شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "بداند هر کسی آنچه احضار کرده است‌"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند نیارم به فروروندگان‌"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "روندگان نهان‌شدگان‌"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "و شب‌گاهی که تیرگیش پشت کند"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و بامدادگاهی که بدرخشد"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "که آن است همانا گفتار فرستاده گرامی‌"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "توانگری نزد خداوند عرش ارجمند (یا سخن روائی)"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "فرمانروائی آنجا امینی‌"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و نیست یار شما دیوانه‌"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و هر آینه بدیدش در اُفقی آشکار"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و نیست او بر ناپیدا بخیل‌"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و نیست آن سخن شیطان رانده‌شده‌"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس کجا می‌روید"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "نیست آن جز یادآوریی برای جهانیان‌"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "برای آنکه خواهد از شما که راستی گزیند (یا پایداری کند)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و نخواهید جز آنکه بخواهد خدا پروردگار جهانیان‌"
        }
    ]
}