{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "گاهی که آسمان بشکافت‌"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "و فرمان برد برای پروردگار خویش و سزاوار شد"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "و گاهی که زمین کشیده (پهن) شد"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "و افکند آنچه در آن است و تهی شد"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "و فرمان برد پروردگار خویش را و سزاوار شد"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "ای انسان همانا توئی رنج‌برنده بسوی پروردگار خویش رنجی را پس رسنده‌ای بدان‌"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "امّا آنکه داده شود نامه خویش را به راستش‌"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "پس زود است حساب شود حسابی آسان‌"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "و بازگردد بسوی خاندان خویش شادان‌"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "و اما آنکه داده شود نامه خویش را از پشت سرش‌"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "پس زود است بخواند مرگ را"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "و بچشد آتش را"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "که بود او همانا در خاندان خود شادان‌"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "او همانا پنداشت که هرگز بازنگردد"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "بلکه پروردگار او است بدو بینا"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "پس سوگند نیارم به خورگاه (شفق)"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "و به شب و آنچه فراگیرد"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "و به ماه گاهی که تمام شود"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "که هر آینه سوار گردید پشتی بر پشتی (طبقه‌ای پس از طبقه‌ای)"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "پس چه شودشان که ایمان نیارند"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "و گاهی که خوانده شود بر ایشان قرآن سجده نکنند"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "بلکه آنان که کفر ورزیدند تکذیب کنند"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "و خدا دانا است بدانچه در خویشتن نهان دارند"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "پس مژده ده ایشان را به عذابی دردناک‌"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "مگر آنان که ایمان آوردند و کردار شایسته کردند که ایشان را است مزدی بی‌پایان (یا بی‌منّت)"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "سوگند به آسمان دارنده برجها"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "و به روز وعده‌شده‌"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "و به گواه و گواهی‌شده‌"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "کشته شوند یاران حفره‌ها"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "آن آتش فروزان (یا دارنده) سوخت‌"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "گاهی که ایشانند بر آن نشستگان‌"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "و آنانند بر آنچه به مؤمنان کنند گواهان‌"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "و خشم نگرفتند بر ایشان جز از آن رو که ایمان آوردند به خدای عزّتمند ستوده‌"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "آنکه وی را است پادشاهی آسمانها و زمین و خدا است بر همه چیز گواه‌"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "همانا آنان که فریب دادند مردان و زنان مؤمن را سپس توبه نکردند ایشان را است عذاب دوزخ و ایشان را است عذاب سوزان‌"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "همانا آنان که ایمان آوردند و کردار شایسته کردند ایشان را است باغهائی که روان است زیر آنها جویها این است رستگاری بزرگ‌"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "همانا خشم‌آوری پروردگار تو است سخت‌"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "همانا او پدید آرد و بازگرداند"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "و او است آمرزگار دوست‌دار"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "دارنده عرش گرامی‌"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "کننده هر آنچه خواهد"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "آیا بیامدت داستان لشکرها"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "فرعون و ثمود"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "بلکه آنان که کفر ورزیدند در تکذیبند"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "و خدا است از پشت سرشان فراگیرنده‌"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "بلکه آن قرآنی است گرامی‌"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "در لوحی نگهداشته‌"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و به شب درآینده‌"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و چه دانستت چیست شب درآینده‌"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن ستاره تابنده‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "نیست کسی جز بر او است نگهبانی‌"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس بنگرد انسان از چه شد آفریده‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "آفریده شد از آبی جهنده‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "که برون آید از میان کمر و استخوانهای سینه‌"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "همانا او است بر بازگردانیدنش توانا"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزی که فاش شوند رازهای درون‌"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس نیستش نیروئی و نه یاوری‌"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان دارای برگشت یا باران‌"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و به زمین دارای شکاف‌"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "که آن است همانا گفتاری جداسازنده‌"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و نیست آن یاوه (شوخی)"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "همانا ایشان نیرنگ آرند نیرنگی‌"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و نیرنگ آرم نیرنگی‌"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس مهلت ده کافران را مهلتشان ده اندکی‌"
        }
    ]
}