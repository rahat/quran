{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "تسبیح گوی نام پروردگار خویش را آن برتر"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "آنکه آفرید پس راست کرد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آنکه تقدیر کرد پس هدایت کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آنکو برون آورد چراگاه را"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پس گردانیدش خشک سیاه‌"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زود است بخوانیم بر تو (خوانا گردانیمت) تا فرامواش نکنی‌"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خواهد خدا که او می‌داند آشکار را و آنچه نهان شود"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و روان گردانیمت بسوی آسانی‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس یادآوری کن اگر سود دهد یادآوردن‌"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "زود است یادآورد آنکه می‌ترسد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و دوری گزیندش بدبخت‌تری‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "که می‌چشد آتش بزرگتر را"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "پس نمیرد در آن و نه زنده شود"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "همانا رستگار شد آنکه پاکی جست‌"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و یاد کرد نام پروردگارش را پس نماز گزارد"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلکه برمی‌گزینید زندگانی دنیا را"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "و آخرت بهتر است و پایدارتر"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "همانا این است در نامه‌های نخستین‌"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "نامه‌های ابراهیم و موسی‌"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آیا بیامدت داستان فراگیرنده‌"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "رویهائی است در آن روز سرافکنده‌"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "کارکننده‌اند رنجبرنده‌"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "چشند آتشی سوزان‌"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "نوشانیده شوند از چشمه جوشان‌"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "نیستشان خوراکی جز از خار"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "نه فربه سازد و نه بی‌نیاز کند از گرسنگی‌"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "رویهائی است در آن روز شاداب‌"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از کوشش خویشند خوشنود"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشتی فرازنده‌"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "نشنوند در آن یاوه‌ای‌"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آن است چشمه روان‌"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آن است تختهائی افراشته‌"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و جامهائی نهاده‌"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهائی چیده (صف آورده)"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و پرده‌های گسترده‌"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آیا ننگرند بسوی اشتر چگونه آفریده شد"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و بسوی آسمان چگونه افراشته شد"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و بسوی کوه‌ها چگونه نشانده شد"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و بسوی زمین چگونه گسترده شد"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس یادآوری کن جز این نیست توئی یادآورنده‌"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "نیستی بر ایشان فرمانده‌"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر آنکه روی برتافت و کفر ورزید"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "که عذاب کندش خدا آن عذاب بزرگتر"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "همانا بسوی ماست بازگشتشان‌"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس همانا بر ماست حسابشان‌"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "سوگند به بامداد"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "و شبهای ده‌گانه‌"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "و جفت و تک‌"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "و به شب گاهی که برود"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "آیا هست در این سوگندی برای خردمند"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "آیا ندیدی چه کرد پروردگار تو به عاد"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "ارم دارای ستون‌"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "آنی که آفریده نشد مانندش در شهرها"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "و ثمودی که بریدند سنگ را به درّه‌"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "و فرعون دارنده ستونها (یا میخها)"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "آنان که سرکشی کردند در شهرها"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "پس فراوان کردند در آنها تبهکاری را"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "پس بریخت بر آنان پروردگار تو تازیانه عذاب‌"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "همانا پروردگار تو است در کمینگاه‌"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "اما انسان هر گاه بیازمایدش پروردگارش پس گرامیش دارد و نعمتش دهد گوید پروردگارم گرامیم داشت‌"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "و اما هر گاه بیازمایدش پس تنگ گیرد بر او روزیش را گوید پروردگارم خوارم ساخت‌"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "نه چنین است بلکه گرامی ندارید یتیم را"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "و ترغیب نکنید بر خورانیدن بینوا"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "و خورید میراث را خوردنی گوارا (یا انبوه)"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "و دوست دارید مال را دوستی فراوان‌"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "نه چنین است هر گاه کوبیده شود زمین کوبیدنی کوبیدنی‌"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "و بیاید پروردگار تو با فرشتگان صفی صفی‌"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "و آورده شود آن روز دوزخ در آن روز یادآور شود انسان و کجاستش یادآوری‌"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "گوید کاش پیش می‌فرستادم برای زندگانی خویش‌"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس در آن روز عذاب نشود چون عذاب او کسی‌"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و بسته نشود چون بستن او کسی‌"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "ای روان آسوده (یا ای نفس آرمیده)"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "بازگرد بسوی پروردگار خویش خشنود خشنودشده‌"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "پس درآی در بندگانم‌"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و درآی در بهشتم‌"
        }
    ]
}