{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Eger bilirseniz, gercekten bu buyuk bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Suphesiz bu, degerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli/korunmus bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenmis olanlar dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbi tarafından indirilmistir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Simdi siz, bu sozu mu yalanlıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete sukrediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hani can bogaza gelip dayandıgında"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakıp durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz; ona sizden daha yakınız, ama goremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki (tekrardan dirilip) ceza gormeyecekmissiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eger dogru soyluyor iseniz, onu (cıkmakta olan canı) geri cevirsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eger o (olen kisi), yakın kılınanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, guzel rızık ve Naim Cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eger o, sagdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sagdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eger o, yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Iste ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) Cehennem'e atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Suphe yok ki, kesin gercek iste budur"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "O halde sen, Yuce Rabbinin adını tesbih et"
        }
    ]
}