{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerceklesmesine artık yalan diyecek yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alcaltıcı, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsılınca"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca oldugunda"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz toprak halinde dagılıp savruldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagdakiler, (ne mutlu) o sagdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdır onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) onde olanlar, onculerdir"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlar, yakınlastırılmıs olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Onlar Naim Cennetleri'ndedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir cogu oncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Altın ile) islenmis tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında olumsuz genc hizmetciler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagından (doldurulmus) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan basları da agrımaz ve akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Isledikleri amellere karsılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir soz ve gunaha sokan bir laf isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Soylenen; yalnızca \"Selam, selam!\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagdakiler, (ne mutlu) o sagdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz sedir agaclarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir cok meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuksek dosekler icindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o hurileri yeni bir yaratılısla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine duskun ve yasıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag taraftakiler icin"
        }
    ]
}