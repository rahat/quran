{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır! And olsun Ay’a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Donup gittigi zaman geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve agarmakta olan sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Suphesiz o (Sekar), buyuk (musibetlerden) biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Insanlar icin bir uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden ileri gitmek ya da geri kalmak isteyen kimseler icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis kazandıgına karsılık bir rehindir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak Ashab-ı Yemin (sag ehli) baskadır"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "(Onlar) cennetlerdedirler. Birbirlerine sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suclulardan"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "“Sizi Sekara/Cehennem'e sokan nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar derler ki; \"Biz namaz kılan kimseler degildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "“Yoksulları da doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "(Batıla) Dalanlarla beraber biz de dalıp gitmistik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "“Hesap gununu de yalanlıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "“Nihayet olum bize gelip catıncaya dek"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık sefaat edenlerin sefaatleri onlara yarar saglamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Oyleyse onlara ne oluyor da ogutten yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Onlar adeta urkutulmus yaban esekleri gibidir"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan urkup, kacan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır; her biri onune acılıvermis sahifeler verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Asla! Dogrusu onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır! Suphesiz o (Kur'an) ancak bir oguttur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Artık dileyen kimse ondan ogut alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Allah dilemedikce onlar ogut almazlar. Kendisinden korkulmaya layık olan da, bagıslayıcı olan da O’dur"
        }
    ]
}