{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemis ve namaz kılmamıstı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamıs ve yuz cevirmis"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da calım satarak ailesine gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "“Bu azap sana layıktır, layık"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Evet! Layıktır sana, layık!” denilecek"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Yoksa insan, bası bos bırakılacagını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O akıtılan meniden bir nutfe degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra alaka olmus, Allah onu yaratmıs ve duzenlemisti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan da iki esi, erkek ve disiyi var etmisti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın oluleri diriltmeye gucu yetmez mi"
        }
    ]
}