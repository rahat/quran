{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O; yaratıp sekillendiren, duzene koyandır"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O, (her seyi) olcuyle yapıp, yol gosterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Otlagı cıkarandır"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kuru siyah bir ota cevirmistir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur’an’ı) okutacagız ve sen onu unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ancak Allah’ın diledigi haric. Suphesiz O; acık olanı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve sana en kolay olanı kolaylastırırız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde –eger ogut fayda verirse- sen de ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) Ici titreyerek korkan hatırlayıp kendine gelir"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kotu kimse ise ogutten kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsedir ki, en buyuk atese girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun icinde ne olur, ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Sonra onun icinde ne olur, ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ve Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat sizler, dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz bu, onceki sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim’in ve Musa’nın sahifelerinde"
        }
    ]
}