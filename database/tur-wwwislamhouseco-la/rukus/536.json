{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "(Ey Muhammed!) Senin gogsunu acıp genisletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yukunu uzerinden kaldırıp indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "O (yuk) senin belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve senin sanını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Suphesiz her zorlukla beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gercekten guclukle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde bos kaldıgın zaman (ibadet ve dua ile) yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnızca Rabbine yonel"
        }
    ]
}