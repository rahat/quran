{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar dokuldugunde"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler birbirine karıstırıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirler alt ust edildigi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(Artık her) Nefis, onceden takdim ettiklerini ve ertelediklerini bilip ogrenmis olur"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! O kerim Rabbine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O seni yarattı, sana duzenli sekil verdi ve dengeli kıldı"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni diledigi surette terkib etti (sekillendirdi)"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, hayır! Siz hesap ve cezayı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Ve suphe yok ki, sizin uzerinizde koruyucular/gozetleyiciler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Serefli yazıcılar/Kiramen, Katibin vardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar ne yaptıgınızı biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler, elbette nimetler icinde olacaktır"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler/gunahkarlar ise kesinlikle Cehennem'dedir"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Hesap gunu oraya atılacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar oradan (bir yere) kaybolacak degildirler"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Hesap ve ceza gununun ne oldugunu sen ne bileceksin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ve yine hesap ve ceza gununun ne oldugunu sen ne bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun, hic kimsenin baskası icin hicbir seye malik olmadıgı gundur. O gun buyruk, yalnız Allah’ındır"
        }
    ]
}