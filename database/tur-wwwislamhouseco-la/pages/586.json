{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes duruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, sacılıp dagıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer basıbos bırakıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler tutusturuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kisiler (benzerleriyle) birlestirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri (topraga) gomulen kız cocuguna soruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunahtan dolayı olduruldu?\" (diye)"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) acıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok, sıyrılıp ayrıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her nefis onceden ne hazırladıgını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! Yemin ederim gizlenen (yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yorungesinde giden ve gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karardıgında geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Aydınlanmaya basladıgında sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Suphesiz o, cok degerli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Kuvvet sahibi; Arsın sahibinin katında itibarlı (bir elcinin)"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendine itaat edilen, ustelik guvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız bir mecnun degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu (Cebrail'i) ufukta apacık gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayp hakkında cimri degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus Seytan'ın sozu de degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Oyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, yalnızca butun alemler icin bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dosdogru olmak isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz de dileyemezsiniz"
        }
    ]
}