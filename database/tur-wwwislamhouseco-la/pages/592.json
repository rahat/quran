{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat sizler, dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz bu, onceki sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim’in ve Musa’nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Dehseti) Her seyi kaplayacak olan (kıyamet)in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun birtakım yuzler vardır ki, zillete burunmuslerdir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısmıs, (bosa) yorulmuslardır"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Son derece kızgın bir kaynaktan icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru bir dikenden baska yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne doyurup semirtir, ne de aclıktan korur"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun birtakım yuzler vardır ki, nimet icinde mutludurlar"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından dolayı hosnutturlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir Cennet'tedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada hicbir bos soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Yerlestirilmis surahiler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve dosenmis nefis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Deveye bakmıyorlar mı, nasıl yaratılmıstır"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge bakmıyorlar mı, nasıl yukseltilmistir"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara bakmıyorlar mı, nasıl dikilmislerdir"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yeryuzune bakmıyorlar mı, nasıl yayılmıstır"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık sen ogut ver! Sen ancak bir ogut vericisin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onların uzerinde bir zorba degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve kufre saparsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Iste oylesini Allah en buyuk azap ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusu ancak bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların sorguya cekilmesi de sadece bize aittir"
        }
    ]
}