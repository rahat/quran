        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların Rablerinin yanındaki mukafatları altından ırmaklar akan Adn cennetleridir. Onlar orada ebedi kalıcıdırlar. Allah onlardan razı olmustur, onlar da ondan hosnut olmuslardır. Iste bu Rabbinden korkan kimseler icindir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, siddetle sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yeryuzu, agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan ne oluyor buna dedigi vakit"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun, yer kendi haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona (oyle) vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar amellerinin kendilerine gosterilmesi icin boluk boluk kabirlerinden cıkacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre agırlıgınca bir hayır islerse, onun mukafatını gorecektir"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre agırlıgınca bir kotuluk islerse, onun cezasını gorecektir"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Soluk soluga kosanlara yemin olsun"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Kosarken) kıvılcım sacanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Toplulugun tam ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Insan, Rabbine karsı gercekten cok nankordur"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Ve suphesiz kendisi de buna sahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Suphesiz onun mal sevgisi de cok siddetlidir"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi ki kabirlerde olanlar alt ust edildiginde"
        }
    ]
