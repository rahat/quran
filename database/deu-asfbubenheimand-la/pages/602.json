{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Fur die Vereinigung der Qurais"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "ihre Vereinigung wahrend der Reise des Winters und des Sommers"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "So sollen sie dem Herrn dieses Hauses dienen"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Der ihnen Speise nach ihrem Hunger gegeben und ihnen Sicherheit nach ihrer Furcht gewahrt hat"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Siehst du (nicht) denjenigen, der das Gericht fur Luge erklart"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Das ist derjenige, der die Waise zuruckstoßt"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "und nicht zur Speisung des Armen anhalt"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Wehe nun den Betenden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "denjenigen, die auf ihre Gebete nicht achten"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "denjenigen, die dabei (nur) gesehen werden wollen"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "und die Hilfeleistung verweigern"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Wir haben dir ja al-Kautar gegeben"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "So bete zu deinem Herrn und opfere"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Gewiß, derjenige, der dich haßt, - er ist vom Guten abgetrennt"
        }
    ]
}