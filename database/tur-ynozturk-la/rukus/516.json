{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Yemin olsun, o art arda gonderilenlere/meleklere/ruzgarlara/vahyin bolumlerine/kalplere inen doguslara"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Esip de bukup devirenlere"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Dagıtıp yayanlara/diriltip harekete getirenlere"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Gerektigi sekilde ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ogut ulastıranlara/Kur´an´ı ulastıranlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ozur yahut uyarı icin"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Ki size duyurulmus olan mutlaka gerceklesecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar silinip supuruldugunde"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar un-ufak edilip savruldugunda"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Resuller vakte baglandıgında"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Hangi gun icin vakte baglandılar"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Ayrım ve hukum gunu icin"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ayrım ve hukum gununu sana bildiren nedir"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Oncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra, geriden gelenleri de onların peslerine takarız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Biz, suclulara iste boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Yalanlayanların o gun vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu dayanıklı karargahta tuttuk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir olcuye/sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Bir olcuyle yaptık. Ne guzel olcu koyanlarız biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Vay basına o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeri, bir toplanma zemini yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Diriler bakımından da oluler bakımından da"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada oturaklı, basını yucelere kaldırmıs daglar olusturduk. Ve size tatlı bir su icirdik"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi, yalanlamakta oldugunuz seye gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Haydi, uc catallı golgeye gidin"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ne golgelendirir ne alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Gercekten o, koske benzer kıvılcımlar sacar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "O kıvılcım sanki sarımtırak bir halat/bir deve kervanı/bakırdan bir ip gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Konusamayacakları gundur bu"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Izin verilmez ki onlara ozur dilesinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ayırma gunudur bu! Sizinle oncekileri bir yere topladık"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eger bir hileniz/bir tuzagınız varsa, hadi hile yapıp tuzak kurun bana"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Vay haline o gun, yalanlayanların"
        }
    ]
}