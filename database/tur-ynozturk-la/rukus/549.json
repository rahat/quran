{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gordun mu o, dini yalan sayanı"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste odur yetimi itip kakan"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmayı ozendirmez o"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay haline o namaz kılanların/dua edenlerin ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Namazlarından/dualarından gaflet icindedir onlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Riyaya sapandır onlar/gosteris yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve onlar, kamu hakkına/yardıma/zekata/iyilige engel olurlar"
        }
    ]
}