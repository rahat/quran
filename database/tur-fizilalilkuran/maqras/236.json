{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip O´na yaraşır şekilde boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatılarak dümdüz yapıldığı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçindekileri dışarı atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbine yaraştığı şekilde O´na kulak verip boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insanoğlu! Sen Rabbine kavuşuncaya kadar çalışıp çabalayacak, sonunda O´na kavuşacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kimin kitabı sağından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O kolay bir hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin kitabı da sırtının arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O, ölümü çağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve çılgın alevli cehenneme girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, dünyada ailesi arasında sevinç içinde idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Rabbine hiç dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Aksine Rabbi onu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Akşamın alaca karanlığına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve gecenin içinde barındırdığına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki Ay´a andolsun ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Şüphesiz siz bir durumdan diğerine uğrayacaksınız"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara ne oluyor da inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur´an okunduğu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine kafir olanlar yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah onların içinde gizlediklerini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onları acıklı bir azab ile müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İman edenler ve salih ameller işleyenler hariç. Onlar için bitip tükenmeyen mükafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçları olan göğe"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Vaad edilen güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şahitlik edene ve şahitlik edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Hendekleri hazırlayanların canı çıksın"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Bol yakıtı olan ateşi oralara dolduranların"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani onlar hendeklerin başında oturuyorlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yaptıkları işkenceleri seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Müminlerden öç almalarının tek sebebi aziz, övgüye lâyık Allah´a inanmalarıydı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki göklerin ve yerin sahibi olan Allah´a. Allah herşeye şahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "İnanmış erkek ve kadınlara işkence edip, sonra yaptıklarına tevbe etmeyenler, var ya. Şüphesiz onlar için cehennem azabı vardır. Yakıp kavuran azap ta onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "inananlar ve iyi işler yapanlar için de altlarından ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrusu Rabbinin yakalaması şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "İlk yaratan ve tekrar yaratacak olan da O´dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, bağışlayan ve sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arş´ın sahibidir, yücedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "İstediğini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Sana orduların haberi geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud´a ait orduların"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu kâfirler bir yalanlama içindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Halbuki Allah onları artlarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Aksine, o şerefli bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Korunan bir levhada (Levh-i Mahfuz´da)´dır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve târıka and olsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Târıkın ne olduğunu bilir misin sen"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O karanlığı delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir can yoktur ki başında bir koruyucu olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Öyleyse insan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Fışkıran su damlacığından yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel ile kaburga kemikleri arasından çıkan"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Allah onu tekrar yaratmaya kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizli işlerin ortaya çıkarıldığı günde"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Onun hiçbir gücü ve hiçbir yardımcısı olmaz"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Yağmurun sahibi göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Bitkinin yeşerdiği yere andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Şüphesiz Kur´an kesin bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O saçma bir söz değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen kâfirlere mühlet ver. Onlara biraz zaman tanı"
        }
    ]
}