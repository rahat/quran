{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Hayır, and içerim bu şehre"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Ki sen bu şehre girmektesin"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Doğurana ve doğurduğuna andolsun ki"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Biz insanı birtakım zorluklar, zahmetler ve sıkıntılar içinde yarattık"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "İnsan hiç kimsenin kendisine güç yetiremeyeceğini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Yığın yığın mal tüketmişimdir diyor"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Kimsenin kendisini görmediğini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Biz ona iki göz vermedik mi"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Bir dil, iki dudak vermedik mi"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Biz ona eğri ve doğru iki yol göstermedik mi"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Fakat o zor geçidi aşmaya girişmedi"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "O zor geçidin ne olduğunu sen bilir misin"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "O geçit bir köle ve esir azad etmektir"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "Yahut açlık gününde doyurmaktır"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "Akraba olan yetimi"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "Hiçbir şeyi olmayan yoksulu"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Sonra inanıp birbirlerine sabır tavsiye eden ve merhamet tavsiye edenlerden olmak"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "İşte bunlar amel defterleri sağdan verilenlerdir"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Ayetlerimizi inkar edenler. İşte onlar amel defterleri soldan verilenlerdir"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Onlar her yönden ateşe kapatılacaklardır"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneşe ve onun ışığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan Ay´â"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu ortaya koyan gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu bürüyen geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu yapana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Kişiye ve onu şekillendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona iyilik ve kötülük kabiliyeti verene andolsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Kendini arıtan saadete ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Kendini fenalıklara gömen kimse de ziyana uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlığı yüzünden Hakkı yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "İçinden azgını ileri atılınca"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın elçisi onlara: ´Allah´ın devesine ve onun su içme hakkına dokunmayın´ dedi"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanladılar, deveyi kestiler. Rabbleri de, günahları yüzünden azabı başlarına geçirdi, orayı dümdüz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Allah bu işin sonundan korkmaz"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Örttüğü zaman geceye andolsun"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya çıkıp göründüğü zaman gündüze andolsun"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana andolsun"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Sizin işiniz çeşit çeşittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "ve en güzel sözü doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Onu en kolay başarıya ulaştırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat kim cimrilik eder, kendini zengin görüp kendisini Allah´tan müstağni sayarsa"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en güzel sözü de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Biz de onu en zora yöneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Çukura düştüğü zaman malı ona hiçbir fayda sağlamaz"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğru yola iletmek bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Şüphesiz ahiret de dünya da bize aittir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alev saçan bir ateşe karşı uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Ona ancak bedbaht kimse girer"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "O ki yalanladı ve döndü"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "En çok korkan ondan uzak tutulur"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "O ki malını Allah rızası için vererek arınır, yücelir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "O yaptığı iyiliği birinden karşılık görmek için yapmaz"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Ancak yüce Rabbinin hoşnutluğunu gözeterek yapar"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Elbette kendisi de hoşnut olacaktır"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Kuşluk vaktine andolusun"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "Durgunlaşan geceye andolsun ki"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Rabbin seni bırakmadı ve sana darılmadı"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "Andolsun senin için ahiret dünyadan daha hayırlıdır"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Rabbin sana verecek ve sen razı olacaksın"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "O seni yetim bulup barındırmadı mı"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Şaşırmış bulup da yol göstermedi mi"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "Fakir iken seni zengin etmedi mi"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Yetime gelince sakın onu üzme"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "Yoksula gelince sakın onu azarlama"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "Yalnızca Rabbinin nimetini anlat"
        }
    ]
}