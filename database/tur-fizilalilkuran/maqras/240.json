{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi o, kabirlerde olanlar dışarı atıldığı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Kalplerde olanlar ortaya konulduğu zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Doğrusu Rabbleri o gün herşeyinden haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Gürültü koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o gürültü koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O gürültü koparacak olanın ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar yayılmış pervane gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar atılmış renkli yün gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O hoş bir hayat içinde olur"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onların yeri, (haviye) çukurdur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O kızgın bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Mal ve evlat çoğaltma yarışı sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır gerçeği kesin bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Andolsun ki cehennemi göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Andolsun ki onu gözünüzle kesin olarak göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gün size verilmiş olan her nimetten sorguya çekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asr´a andolsun ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "İnsan mutlak hüsrandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edenler, iyi işler yapanlar, birbirlerine hakkı ve sabrı öğütleyenler bunun dışındadır"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "İnsanları dilleri ile arkalarından çekiştiren ve karşılarında kaş, göz hareketleri ile onları aşağılayan herkese yazıklar olsun"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Malı toplayıp onu teker teker sayana"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının kendisini ölümsüzleştireceğini zannedene yazıklar olsun"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır. O kırıp geçen yere atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "O kırıp geçenin ne olduğunu bilir misin sen"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın tutuşturulmuş ateşidir o"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Tırmanıp yüreklerin üstüne çıkan"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Cehennem onların üzerine kapatılacaktır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzun sütunlar içinde"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin fil sahiplerine yaptığını görmedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların üzerine sürülerle kuşlar gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onların üzerine pişkin tuğladan taşlar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Nihayet onları yenik ekin yaprağı gibi yapıverdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş´in uzlaşıp anlaşması için"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kış yolculuklarında uzlaşıp anlaşması için"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu evin Rabbine kulluk etsin onlar"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O Rabb ki kendilerini açlıktan doyurmuş ve korkudan güvenliğe eriştirmiştir"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte o, öksüzü iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya önayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay, o namaz kılanların haline ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar kıldıkları namazdan gafildirler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gösteriş yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En ufak bir yardımı esirgerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Ey muhammed! Doğrusu biz sana pek çok nimet vermişizdir"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Öyleyse Rabbin için namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Doğrusu adı sanı ortadan kalkacak olan sana kin tutan kimsedir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: Ey kâfirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim taptığıma tapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben sizin taptıklarınıza tapacak değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Sizler de benim taptığıma tapacak değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah´ın yardımı ve fethi geldiğinde"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "İnsanların dalga dalga Allah´ın dinine girdiğini gördüğünde"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini överek tesbih et, O´ndan mağfiret dile. Çünkü O tevbeleri kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb´in iki eli kurusun, kurudu da"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Malı ve kazandığı kendisine fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Alevli ateşte yanacaktır"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da odun hamalı olarak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda sağlam hurma lifinden örülmüş bir ip bulunacaktır"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Allah tektir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah Samed´dir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "O doğurmamış ve doğmamıştır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hiçbir şey O´nun dengi olmamıştır"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki; «Sığınırım ben, karanlığı yarıp sabahı ortaya çıkaran Rabbime"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlığı çöktüğü zaman gecenin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Düğümlere üfleyip tüküren büyücü kadınların şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ve hased ettiği zaman hasedcinin şerrinden.»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: Sığınırım ben, insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "insanların Melikine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "insanların Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "O sinsi vesvesecinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "O ki insanların göğüslerine kötü düşünceleri fısıldar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerek insanlardan"
        }
    ]
}