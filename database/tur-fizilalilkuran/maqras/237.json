{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adını takdis et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O yaratan ve düzeltendir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ölçüleri belirleyip yolunu gösterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yemyeşil meraları bitirendir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları kupkuru çöpe çevirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ey Muhammed! Sana Kur´an´ı biz okutacağız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başka. O açığı da bilir gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yolu tutmağa muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde hatırlatmak fayda verirse hatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah´tan korkan, öğüt alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kaçacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O en büyük ateşe yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun içinde ne ölür ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu mutluluğa ermiştir arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz şu dünya hayatını üstün tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu hüküm elbette ilk sahifelerde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ey insanoğlu! Herşeyi kaplayacak kıyametin haberi sana gelmedi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün birtakım yüzler zillete bürünmüştür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor işler altında bitkin düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Yakıcı ateşe yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru dikenden başka yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne semirtir, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "İnanmış olanların yüzleri, o gün, pırıl pırıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından hoşnutturlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir bahçededirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bu insanlar bakmıyorlar mı, develerin nasıl yaratıldığına"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğün nasıl yükseltildiğine"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların nasıl dikildiğine"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin nasıl yayıldığına"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ey Muhammed! Sen öğüt ver. Çünkü sen ancak öğüt verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde zorlayıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir, inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah onu en büyük azaba uğratır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Dönüşleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını görmek bize düşer"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun tanyerinin ağarmasına"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Çifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gitmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Ki bunlarda akıl sahipleri için birer yemin değeri var"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Görmedin mi Rabbin ne yaptı Ad kavmine"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Yüksek sütunlu İrem´e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki ülkeler arasında onun eşi yaratılmamıştı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadide kayaları oyarak evler yapan Semud kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "ve kazıklar sahibi Firavun´a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Bunlar ülkelerinde azmışlardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda çok kötülük etmişlerdi"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yüzden Rabbin onların üzerine azab kırbacını çarptı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Çünkü Rabbin her an gözetlemektedir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Rabbin denemek için bir insana iyilik edip, nimet verdiği zaman o: «Rabbim beni şerefli kıldı» der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Fakat onu sınamak için rızkını daraltıp bir ölçüye göre verdiği zaman: «Rabbim bana hor baktı» der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır yetime karşı cömert davranmıyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmek konusunda birbirinizi özendirmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Size kalan mirası hak gözetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı pek çok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, yer çarpılıp paralandığı zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizilip, Rabbinin buyruğu gelince"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ki cehennem de o gün getirilmiştir. İşte o gün insan anlar, ancak artık anlamanın kendisine ne faydası var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "O zaman insan, ´Ah keşke ben bu hayatım için önceden iyi işler yapıp gönderseydim´ der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gün O´nun yapacağı azabı kimse yapamaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O´nun vuracağı bağı hiç kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura eren nefis"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Razı edici ve razı edilmiş olarak Rabbine dön"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "İyi kullarım arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime gir"
        }
    ]
}