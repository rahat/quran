    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "Bugün onun için candan bir dost yoktur"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "İrinden başka yiyecek yoktur"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "Onu (bile bile) hata işleyenlerden başkası yemez"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "Yoo yemin ederim; gördüklerinize"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "Ve görmediklerinize ki"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "O (Kur´an), elbette şerefli bir peygamberin sözüdür"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "O, bir şairin sözü değildir. Ne de az inanıyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "Bir kâhinin sözü de değildir. Ne kadar da az düşünüyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Kur´an alemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "Eğer Muhammed, bize karşı ona bazı sözler katmış olsaydı"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "Biz onu kuvvetle yakalardık"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "Sonra onun şah damarını koparırdık"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "Hiçbiriniz de onu koruyamazdınız"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "Doğrusu Kur´an Allah´a karşı gelmekten sakınanlara bir öğüttür"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "İçinizde yalanlayanlar bulunduğunu şüphesiz bilmekteyiz"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "Doğrusu Kur ân inkarcılar için bir üzüntüdür"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "O, şüphesiz kesin gerçektir"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Öyleyse ey insanlar! Çok büyük olan Rabbinin adını tesbih et"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "Bir isteyen, inecek azabı istedi"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Kafirlerin başına; ki onu savacak yoktur"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Yükselme derecelerinin sahibi Allah´tandır"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve ruh, miktarı elli bin yıl süren bir gün içinde O´na yükselir"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Şimdi sen güzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Onlar onu uzak görüyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın görüyoruz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gün gök, erimiş bakır gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Dağlar, atılmış renkli yün gibi olur"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost dostun halini sormaz"
        }
    ]
