{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Birbirlerine neyi soruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O büyük haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar onda ayrılığa düştüler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır, yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryüzünü bir beşik"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da onun için birer direk kıldık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi çift çift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme vakti yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir örtü yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü geçiminiz için çalışıp kazanma zamanı yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Üstünüze yedi sağlam gök bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Oraya parlak kandiller astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkışan bulutlardan şarıl şarıl su indirdik ki"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler, bitkiler ve birbirine sarmaş dolaş olmuş ağaçlı bahçeler çıkaralım"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Onunla taneler, bitkiler ve birbirine sarmaş dolaş olmuş ağaçlı bahçeler çıkaralım"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Muhakkak ki hüküm günü, belirlenmiş bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a üflendiği gün, bölük bölük Allah´a gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "O gün gökyüzü açılır ve orada pek çok kapılar oluşur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Dağlar yürütülür, serap haline gelir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem de suçluları gözetleyip durmaktadır"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Orası azgınların varacağı yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada sonsuza dek kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne bir serinlik ne de içilecek bir şey tadarlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Yalnız kaynar su ve irin içerler"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Çünkü onlar bir hesab görüleceğini ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi de tamamen yalanlamışlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz de herşeyi sayıp yazmıştık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Şimdi tadın, artık size azabtan başka bir şeyi artırmıyacağız"
        }
    ]
}