{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hiç ölmeyecek genç hizmetçiler aralarında dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gürül gürül akan bir çeşmeden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu içki ne başlarını ağrıtır, ne de sarhoş eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoşlarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "İştahla yiyecekleri kuş etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gözlü huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karşılığı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş ve ne günah içerikli bir söz işitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "İşittikleri tek söz «selâm, selâm» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sağdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yüklü muz ağaçları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz gölgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Sürekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yüksek döşekler üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine aşık ve onlarla aynı yaşta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sağdan verilenler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların bazıları eski ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bazıları da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Defterleri soldan verilenler. Vay gele başlarına"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Onlar gözeneklerine işleyen kavurucu bir rüzgar önünde ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kara ve boğucu bir dumanın gölgesi altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serinliği ve ne de okşayıcılığı var"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar vaktiyle varlık içinde azıtmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı (Allah´a ortak koşmayı) işlemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "«Ölüp toprak ve kemik yığını olduktan sonra, biz yeniden mi diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Eski atalarımız da mı?» diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Öncekiler de, sonrakiler de.»"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belirlenmiş bir günün randevusunda bir araya getirileceklerdir"
        }
    ]
}