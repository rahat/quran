{
    "pages": [
        {
            "chapter": 76,
            "verse": 26,
            "text": "Gecenin bir bölümünde O´na secde et, geceleri O´nu uzun uzun tesbih et"
        },
        {
            "chapter": 76,
            "verse": 27,
            "text": "Bu adamlar şu geçici dünyayı severler ve önlerindeki o zorlu günü gözardı ederler"
        },
        {
            "chapter": 76,
            "verse": 28,
            "text": "Onları yaratan ve vücutlarına biçim veren biziz. İstediğimiz zaman onları benzerleri ile değiştiririz"
        },
        {
            "chapter": 76,
            "verse": 29,
            "text": "Bu bir hatırlatmadır. İsteyen Rabbine giden yolu tutar"
        },
        {
            "chapter": 76,
            "verse": 30,
            "text": "Allah dilemedikçe siz bir şey dileyemezsiniz. Hiç kuşkusuz Allah herşeyi bilir ve her işi yerinde yapar"
        },
        {
            "chapter": 76,
            "verse": 31,
            "text": "O dilediklerini rahmetinin kapsamı altına Alır. Zalimlere gelince O, onlar için acıklı bir azap hazırlamıştır"
        },
        {
            "chapter": 77,
            "verse": 1,
            "text": "Dalga dalga salınanlara"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Kasırga gibi esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Her yana dağıtanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Doğruyu eğriden kesin çizgilerle ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "İlahi mesajı peygamberlere iletenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ya bahaneleri boşa çıkarmak ya da uyarmak amacı ile"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size söz verilen kıyamet kesinlikle kopacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar karardığı zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gök parçalandığı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Dağlar ufalanıp dağıldığı zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Peygamberlerin tanıklık sıraları geldiği zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bu tanıklık hangi güne ertelendi"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hüküm gününe"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hüküm gününün ne olduğunu biliyor musun"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Önceki inkarcı toplumları yoketmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonraki inkarcıları da katarız onlara"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "İşte biz günahkârlara böyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gün inkarcıların vay haline"
        }
    ]
}