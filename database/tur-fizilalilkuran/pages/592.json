{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz şu dünya hayatını üstün tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu hüküm elbette ilk sahifelerde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ey insanoğlu! Herşeyi kaplayacak kıyametin haberi sana gelmedi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün birtakım yüzler zillete bürünmüştür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor işler altında bitkin düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Yakıcı ateşe yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru dikenden başka yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne semirtir, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "İnanmış olanların yüzleri, o gün, pırıl pırıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından hoşnutturlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir bahçededirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bu insanlar bakmıyorlar mı, develerin nasıl yaratıldığına"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğün nasıl yükseltildiğine"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların nasıl dikildiğine"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin nasıl yayıldığına"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ey Muhammed! Sen öğüt ver. Çünkü sen ancak öğüt verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde zorlayıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir, inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah onu en büyük azaba uğratır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Dönüşleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını görmek bize düşer"
        }
    ]
}