{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "Örttüğü zaman geceye andolsun"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya çıkıp göründüğü zaman gündüze andolsun"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana andolsun"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Sizin işiniz çeşit çeşittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "ve en güzel sözü doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Onu en kolay başarıya ulaştırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat kim cimrilik eder, kendini zengin görüp kendisini Allah´tan müstağni sayarsa"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en güzel sözü de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Biz de onu en zora yöneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Çukura düştüğü zaman malı ona hiçbir fayda sağlamaz"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğru yola iletmek bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Şüphesiz ahiret de dünya da bize aittir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alev saçan bir ateşe karşı uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Ona ancak bedbaht kimse girer"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "O ki yalanladı ve döndü"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "En çok korkan ondan uzak tutulur"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "O ki malını Allah rızası için vererek arınır, yücelir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "O yaptığı iyiliği birinden karşılık görmek için yapmaz"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Ancak yüce Rabbinin hoşnutluğunu gözeterek yapar"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Elbette kendisi de hoşnut olacaktır"
        }
    ]
}