{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer dehşetle sarsıldıkça sarsıldığı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yeryüzü ağırlıklarını dışarı çıkardığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insanın «Buna ne oluyor» dediği zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün yer haberlerini söyler"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahiy ile herşeyi bildirmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar ayrı ayrı gruplar halinde, ilahi divana çıkarlar ki, yaptıkları işler kendilerine gösterilsin"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre ağırlığınca hayır yapmışsa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim zerre ağırlığınca şer yapmışsa onu görür"
        }
    ]
}