{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar saçıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler patladığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına çıktığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi öne, neyi geriye aldığını öğrenir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Seni engin kerem sahibi Rabbine, karşı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O, seni yaratan, belini doğrultan ve seni dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Dilediği biçimde sana şekil veren Rabbine"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Aksine siz dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Şüphesiz başınızda bekçiler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Şerefli katipler"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Şüphesiz iyiler cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din günü oraya sürülürler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan bir daha çıkamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gününün ne olduğunu bilir misin sen"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Hem din gününün ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün kimsenin kimseye faydası olmaz. O gün yetki sadece Allah´ındır"
        }
    ]
}