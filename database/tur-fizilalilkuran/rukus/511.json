{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, hayır! Andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Gerileyen gece karanlığına"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Söken şafağa"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Sakar (cehennem) büyük gerçeklerden biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "İnsanlar için uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Aranızdaki ilerlemek isteyenler için de, geriye gitmeyi tercih edenler için de"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Herkes tutumunun ve davranışlarının tutsağıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Yalnız defterleri sağ yanlarından verilenler hariç"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennetlerde ağırlanırlar. Sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Günahkârlara"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sakar´a (cehenneme) girmenizin sebebi nedir? diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Cehennemlikler derler ki; «Biz namaz kılanlardan değildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksulların karnını doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Bizim gibi olanlarla birlikte asılsız ve bozguncu konuşmalara dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Hesap verme gününü inkar ederdik"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Sonunda bir de ölüm gelip çattı.»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık onlara şefaat edebilecek olanların aracılığı yarar sağlamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "O halde onlar niye hatırlatmalara, öğütlere yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Yaban eşekleri gibidirler"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan korkup kaçan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Aslında bunların her biri, kendisine okunmaya hazır kutsal sayfalar inmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, hayır! Aslında onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır, hayır! Bu Kur´an bir öğüt, bir hatırlatmadır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "İsteyen ondan ders alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Fakat Allah dilemedikçe onlar bundan ders alamazlar. O kendisinden korku duyulmaya ve affetmeye lâyıktır"
        }
    ]
}