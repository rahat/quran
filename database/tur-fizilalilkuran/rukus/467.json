    "rukus": [
        {
            "chapter": 55,
            "verse": 26,
            "text": "Yeryüzündeki her şey yok olacaktır"
        },
        {
            "chapter": 55,
            "verse": 27,
            "text": "Sadece kerem sahibi, yüce Rabbinin varlığı süreklidir"
        },
        {
            "chapter": 55,
            "verse": 28,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 29,
            "text": "Göktekiler ve yerdekiler hep O´ndan bir şey isterler. O her gün (her an) yeni bir işle meşguldür"
        },
        {
            "chapter": 55,
            "verse": 30,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 31,
            "text": "Ey insanlar ve cinler, yakında sizinle hesaplaşmak için özel vakit ayıracağız"
        },
        {
            "chapter": 55,
            "verse": 32,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 33,
            "text": "Ey cinler ve insanlar, eğer göklerin ve yerin sınırlarını aşarak kaçmaya gücünüz yetiyorsa kaçınız. Fakat ancak özel bir gücünüz varsa bunu başarabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 34,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 35,
            "text": "Üzerinize dumansız alev ve bakır eriyiği püskürtülür de bu azaptan sizi kurtaran bulunmaz"
        },
        {
            "chapter": 55,
            "verse": 36,
            "text": "Peki, Rabbinizin hangi nimetlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 37,
            "text": "Gök parçalanıp da kırmızı gül renginde bir yağ eriyiğine dönüştüğü zaman"
        },
        {
            "chapter": 55,
            "verse": 38,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 39,
            "text": "O gün ne insana ne de cinne suçu sorulmaz"
        },
        {
            "chapter": 55,
            "verse": 40,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 41,
            "text": "Suçlular yüz ifadelerinden tanınarak perçemlerinden ve ayaklarından yakalanırlar"
        },
        {
            "chapter": 55,
            "verse": 42,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 43,
            "text": "İşte suçluların yalanladıkları cehennem budur"
        },
        {
            "chapter": 55,
            "verse": 44,
            "text": "Cehennem ile kaynar su arasında mekik dokurlar"
        },
        {
            "chapter": 55,
            "verse": 45,
            "text": "Peki, Rabbinizin hangi nimetini yalanlıyorsunuz"
