{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onu hiç kimse yalanlayamayacaktır"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O kimini alçaltır, kimini de yükseltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yeryüzü şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olup"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Toz halinde boşluğa dağıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler üç gruba ayrıldığınız zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Defterleri sağdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Defterleri soldan verilenler. Vay gele başlarına"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve öncüler, hep önden gidenler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allah´a yakındırlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Bol nimetli cennetlerdedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Çoğu öncü ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın işlemeli tahtlarda otururlar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı olarak bu tahtlara kurulurlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hiç ölmeyecek genç hizmetçiler aralarında dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gürül gürül akan bir çeşmeden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu içki ne başlarını ağrıtır, ne de sarhoş eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoşlarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "İştahla yiyecekleri kuş etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gözlü huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karşılığı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş ve ne günah içerikli bir söz işitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "İşittikleri tek söz «selâm, selâm» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sağdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yüklü muz ağaçları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz gölgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Sürekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yüksek döşekler üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine aşık ve onlarla aynı yaşta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sağdan verilenler için"
        }
    ]
}