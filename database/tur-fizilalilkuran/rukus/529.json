{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adını takdis et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O yaratan ve düzeltendir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ölçüleri belirleyip yolunu gösterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yemyeşil meraları bitirendir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları kupkuru çöpe çevirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ey Muhammed! Sana Kur´an´ı biz okutacağız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başka. O açığı da bilir gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yolu tutmağa muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde hatırlatmak fayda verirse hatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah´tan korkan, öğüt alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kaçacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O en büyük ateşe yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun içinde ne ölür ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu mutluluğa ermiştir arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz şu dünya hayatını üstün tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu hüküm elbette ilk sahifelerde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        }
    ]
}