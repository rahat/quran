{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Adam ne inandı, ne namaz kıldı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Tersine inkâr etti ve sırt çevirdi"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra çalım satarak ailesinin yanına döndü"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Vay başına geleceklere"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine vay başına geleceklere"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsanoğlu, başıboş bırakılacağını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O fışkıran meniden oluşmuş bir sperma değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra embriyoya dönüştü, sonra Allah onu yaratıp biçimlendirdi"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Sonra ondan erkek ve dişi çiftler türetti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunları yapan Allah, ölüleri diriltemez mi"
        }
    ]
}