{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Gürültü koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o gürültü koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O gürültü koparacak olanın ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar yayılmış pervane gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar atılmış renkli yün gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O hoş bir hayat içinde olur"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onların yeri, (haviye) çukurdur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O kızgın bir ateştir"
        }
    ]
}