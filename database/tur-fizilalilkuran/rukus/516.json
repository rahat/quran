{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Dalga dalga salınanlara"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Kasırga gibi esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Her yana dağıtanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Doğruyu eğriden kesin çizgilerle ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "İlahi mesajı peygamberlere iletenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ya bahaneleri boşa çıkarmak ya da uyarmak amacı ile"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size söz verilen kıyamet kesinlikle kopacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar karardığı zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gök parçalandığı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Dağlar ufalanıp dağıldığı zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Peygamberlerin tanıklık sıraları geldiği zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bu tanıklık hangi güne ertelendi"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hüküm gününe"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hüküm gününün ne olduğunu biliyor musun"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Önceki inkarcı toplumları yoketmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonraki inkarcıları da katarız onlara"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "İşte biz günahkârlara böyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sıvı damlasından yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonra o sıvı damlasını korunaklı bir yuvaya yerleştirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belirli bir sürenin sonuna kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Biz o sıvı damlacığın gelişmesini aşamalı bir plâna bağladık. Biz ne güzel plân yaparız"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz yeryüzünü barınak yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Ölüler için de diriler için de"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yüksek dağlar yaratmadık ve size tatlı sular içirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Şimdi inkar ettiğiniz yere koşunuz"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Üç çatallı gölgeye koşunuz"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Serinlik sağlamayan ve alevden korumayan gölgeye"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O saray gibi kocaman kıvılcımlar saçar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Her biri birer sarı deve gibi kıvılcımlar"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugün onların konuşamayacakları bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Özür dilemelerine de izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gün inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bugün sizi ve sizden öncekileri biraraya getirdiğimiz bir hüküm günüdür"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eğer bana karşı oynayacağınız bir oyununuz varsa haydi, oynayın bakalım"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gün inkarcıların vay haline"
        }
    ]
}