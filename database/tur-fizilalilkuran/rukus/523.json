{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar kararıp dağıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar sökülüp dağıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebeliğinin onuncu ayındaki develer kendi haline bırakıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Yabani hayvanlar bir araya toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler çiftleştiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve sorulduğu zaman o diri diri toprağa gömülen kıza"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suçtan ötürü gömüldü? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Siciller açılıp yayıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gökkubbe yıkıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirdiğini öğrenecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yemin ederim geri kalıp gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp giderken ışık verenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Soluk almaya başlayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz o şerefli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Kuvvet sahibidir. Arşın sahibi Allah katında yücedir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada kendisine itaat edilir, güvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşımız deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Şüphesiz (Muhammed) onu apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında töhmet altında tutulamaz"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O alemlere öğütten başka birşey değildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden düzelmeyi dileyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ancak alemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}