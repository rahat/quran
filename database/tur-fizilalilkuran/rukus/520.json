{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun söküp çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Hemen çekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarışıp, geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken işi düzenliyenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir başka sarsıntı gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün kalpler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözler korkudan aşağı kayar"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz yine eski halimize döndürülecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz çürümüş kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyle ise bu, ziyanlı bir dönüştür» dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Doğrusu bir tek çığlık yetecektir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hepsi hemen bir düzlüğe dökülecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Tuva´da, kutsal bir vadide, Rabbi ona şöyle hitab etmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavuna git çünkü o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: «Arınmağa niyetin var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbine giden yolu göstereyim ki O´na saygı duyup korkasın.»"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Bunun üzerine ona en büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o Musa´yı yalanladı, karşı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra sırtını döndü; çalışmağa koyuldu"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Adamlarını toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yüce Rabbiniz benim dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah bunun üzerine onu dünya ve ahiret azabına uğrattı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Doğrusu bunda Allah´tan korkan kimseye ders vardır"
        }
    ]
}