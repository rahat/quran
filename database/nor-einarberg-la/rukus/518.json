{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Hva snakket de med hverandre om"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Om det store budskap"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "som de er uenige om"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Nei, sannelig skal de fa a vite"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Sa sannelig skal de fa a vite"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Har Vi ikke gjort jorden til et leie"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Og fjellene til støttepilarer"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Vi har skapt dere parvis"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "og gitt dere søvnen til hvile"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "og gjort natten til en kledning"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "og dagen til a skaffe en levemate"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Over dere har Vi bygget syv solide himler"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "og plassert en skinnende lampe"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "og Vi lot falle regn fra regntunge skyer i strømmer"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "for derved a frembringe korn og planter"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "og bugnende haver"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dommens dag er fastsatt"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Den dag det støtes i basunen, og dere kommer i flokker"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "nar himmelen apnes og blir dører"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "og fjellene settes i bevegelse og blir en luftspeiling"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Sannelig, helvete ligger pa lur"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "et hjem for de oppsetsige"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Der skal de bli gjennom tider"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "og der smaker de ingen forfriskende kjølighet og intet a drikke"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "unntatt kokende vann og kloakk"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "som en passende belønning"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "De sa ikke frem til en avregning"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "og fornektet trossig Vart ord"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Alt har Vi opptegnet i en regnskapsbok"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "«Na kan dere smake! Vi skal bare øke straffen enda mer.»"
        }
    ]
}