{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "En som spør, etterlyser den tilstundende straff"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "for de vantro, som ingen kan avverge"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "fra Gud, himmelstigens Herre"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "til Ham stiger englene og Anden opp, pa en dag hvis utstrekning er femti tusen ar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Sa vis vakkert talmod"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "De anser den langt borte"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "men Vi ser den nær"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "Den dag, nar himmelen blir som smeltet kobber"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "og fjellene som kardet ull"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "nar venn ikke snakker til venn"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "nar de far se hverandre. Synderen vil ønske at han kunne løskjøpe seg fra denne dags straff med sine barn"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "sin hustru, sin bror"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "sin slekt som gav ham ly"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "og alle som pa jorden er, om dette sa berget ham"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Men nei, det er en luende ild"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "som tar hele huden av hodet"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "som kaller pa den som snudde ryggen og vendte seg bort"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "som samlet og la i lader"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Mennesket er av natur smaskarent"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Nar ondt treffer ham, er han engstelig"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "og nar godt overgar ham, er han paholden"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Unntatt er de som forretter bønnen"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "og som er vedholdende i bønnen"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "som i det de eier anerkjenner en rett"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "for tiggeren og den trengende"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "og som tror pa dommens dag"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "de som bever for Herrens straff"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "for Herrens straff kan ingen føle seg trygg"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "som holder sitt kjønnsliv i tømme"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "unntatt overfor sine hustruer og sine slavinner, for da kan de ikke bebreides"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "men den som begjærer noe utover dette, slike gar over grensen"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "som passer betrodd gods og sine forpliktelser"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "som star fast i sine vitnemal"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "og overholder sine bønner"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "Disse, i paradisets haver skal de være og de vises all ære"
        }
    ]
}