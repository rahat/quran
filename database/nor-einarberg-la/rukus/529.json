{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Pris Herrens navn, den Høyeste"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "som skapte og formet"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "bestemte og ledet"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "som frembrakte beitemarker"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "og lot dem bli tørre stra"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Vi skal la deg forkynne (Koran), og glem sa ikke"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "unntatt det Gud vil. Han kjenner til det som lyder høyt, og det som holdes skjult"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Vi skal lette det for deg hen til lettelsen"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Sa forman, der formaning nytter"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Den som frykter, vil vise ettertanke"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "men den usle vil unnga den"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "han som skal havne i den store Ild"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "og der kan han verken dø eller leve"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ham gar det godt, som har renset seg"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "kommer Herrens navn i hu, og forretter bønnen"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Nei, dere foretrekker jordelivet"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "men det hinsidige er bedre, og mer varig"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Dette star visselig i de gamle skrifter"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "pa Abrahams og Mose blader"
        }
    ]
}