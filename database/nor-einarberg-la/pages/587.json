{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Nar himmelen revner"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "nar stjernene strøs utover"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "nar havene flyter over"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "nar gravene blir endevendt"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "da skal enhver fa vite hva han har utrettet og hva han har forsømt"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Menneske! Hva har forledet deg vedrørende din høysinnede Herre"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Han som har skapt deg, formet deg og gitt deg rette proporsjoner"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "i den skikkelse Han ønsket a gi deg"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Men sannelig, dere fornekter dommen"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Men over dere er voktere"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "ærverdige skrivere"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "som vel vet hva dere gjør"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "De fromme skal være i salighet"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "mens de syndefulle skal være i helvete"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Der skal de brenne pa dommens dag"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "og derfra kan de ikke komme bort"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Hvordan kan du vite hva dommens dag er"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Hvordan kan du virkelig vite hva dommens dag er"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Den dag da ingen makter a utrette noe for en annen. Saken ligger denne dag i Guds hand"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Ve dem som snyter"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Som nar de tilmales av folk, krever fullt mal"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "men nar de maler ut til dem eller veier til dem, sa snyter de"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Tror ikke disse at de blir gjenoppvekket"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "til en svær dag"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "den dag da menneskene skal sta frem for all verdens Herre"
        }
    ]
}