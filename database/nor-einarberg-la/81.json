{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Nar solen formørkes"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "nar stjernene fordunkles"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "nar fjellene settes i bevegelse"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "nar kameler som skal føde forsømmes"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "nar villdyrene flokker seg"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "nar havene syder"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "nar sjelene forenes med kroppene"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "nar smapiker som ble levende begravd spørres"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "for hvilken synd de ble drept"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "nar skriftrullene (regnskapsbøkene) apnes"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "nar himmelen flas vekk"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "nar det fyres opp i helvete"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "nar paradiset bringes nær"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "da skal enhver fa vite hva han har prestert"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Jeg sverger ved planetene"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "de vandrende og forsvinnende stjerner"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "ved natten, nar den mørkner"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ved morgenen, nar den trekker pusten"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Dette er sannelig ord fra en nobel utsending"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "med stor makt hos tronens Herre"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "fast, adlydt og trofast"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Deres bysbarn er aldeles ikke besatt"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Han har virkelig sett ham ved den klare horisont"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Han var ikke tilbakeholden nar det gjelder det skjulte"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Det var ikke en forkastet satans ord"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hvor vil dere da ta veien"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Dette er intet annet enn en formaning for all verden"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "for den av dere som vil holde rett kurs"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Men dere vil ikke, med mindre Gud, all verdens Herre, vil"
        }
    ]
}