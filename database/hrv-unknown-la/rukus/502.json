{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Upitao je pitalac o kazni koja ce se dogoditi"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Nevjernicima - nema tog ko ce je odbiti"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Od Allaha, Vlasnika usponista"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Penju se meleci i Duh Njemu, u danu cija je mjera pedeset hiljada godina"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Zato se strpi strpljenjem lijepim"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Uistinu! Oni ga vide dalekim"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "A vidimo ga bliskim"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "Na Dan kad nebo kao zeljezna rastalina bude"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "I brda kao vuna budu"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "I ne bude pitao bliznji bliznjega"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "oni ce se vidjeti. Volice zlocinac da se iskupi od kazne Tog dana sinovima svojim"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "I zenom svojom i bratom svojim"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "I porodicom svojom koja ga je stitila"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "I onim ko je na Zemlji, svima, zatim da ga spasi"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Nikako! Uistinu, ona ce buktinja biti"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Trgajuci, da bi przila"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Pozivace onog ko je bjezao i okretao se"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "I skupljao, pa zadrzavao"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Uistinu, covjek je stvoren nestrpljivim"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kad ga takne zlo, nemiran je"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "A kad ga takne dobro, odbojan je"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Osim musallija"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Onih koji su u salatu svom stalni"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "I onih u imecima cijim je pravo poznato"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "Za prosjaka i lisenog"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "I onih koji vjeruju u Dan sudnji"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "I onih koji od kazne Gospodara svog strahuju"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Uistinu! Kazna Gospodara njihovog je (stvar) od koje nema sigurnog"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "I onih koji su ferdzova svojih cuvari"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Izuzev od zena svojih ili onog sta posjeduju desnice njihove - pa uistinu, oni nece biti prekoreni"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Pa ko trazi iza toga, pa ti takvi su prestupnici"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "I onih koji su prema emanetima svojim i zavjetu svom cuvari"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "I onih koji uz svjedocenja svoja stoje"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "I onih koji salat svoj cuvaju"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "Takvi ce u bascama pocasceni biti"
        }
    ]
}