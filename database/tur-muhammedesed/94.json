{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz kalbini aç(ıp ferahlat)madık mı"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "ve üzerinden yükü kaldırmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "o belini büken (yükü)"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Şerefini ve itibarını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Elbette her güçlükle birlikte bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Şüphesiz, her güçlükle bir kolaylık"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Öyleyse (sıkıntıdan) kurtulduğun zaman sağlam dur"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "ve yalnız Rabbine sevgi ile yönel"
        }
    ]
}