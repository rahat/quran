{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Kabus Gibi Çöken´den haberin var mı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Bazı yüzler o Gün yere bakacak"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "(günahın yükü altında) bitkin düşmüş, (korku ile) sarsılmış"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "kızgın bir ateşe girmek"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "ve kaynar bir pınardan tatmak üzere"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Hiçbir yiyecekleri yok kuru dikenlerin acılığından başka"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "ne bir güç veren ne de açlığı gideren (dikenlerin)"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Bazı yüzler (de) o Gün mutlulukla parıldayacak"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "çabaları(nın meyvesini tatmak)tan memnun"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "harika bir bahçede"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "boş lakırdı işitmeyecekleri (bir bahçede)"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Sayısız pınarlar akacak orada"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "(ve) yükseltilmiş (mutluluk) tahtları"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "doldurulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "ve serilmiş halılar"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Peki, (o yeniden dirilmeyi inkar edenler) bakmazlar mı yağmur yüklü bulutlara (ve görmezler mi) nasıl yaratılmış onlar"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve (bakmazlar mı) göğe, nasıl yükseltilmiş"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara, nasıl sağlamca dikilmiş"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve toprağa, nasıl yayılmış"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "İşte böyle, (ey Peygamber,) onlara öğüt ver; senin görevin yalnız öğüt vermektir"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "sen onları (inanmaya) zorlayamazsın"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak, kim hakikati inkara şartlanmış olarak yüz çevirip uzaklaşırsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona (öteki dünyada) en büyük azabı tattıracaktır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Bizedir onların dönüşleri"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "ve Bize düşer onları hesaba çekmek"
        }
    ]
}