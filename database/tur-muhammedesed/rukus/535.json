{
    "rukus": [
        {
            "chapter": 93,
            "verse": 1,
            "text": "Aydınlık sabahı düşün"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "ve durgun, karanlık geceyi"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Rabbin seni ne unuttu ne de darıldı"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "öteki dünya senin için (hayatının) bu ilk bölümünden mutlaka daha iyi olacak"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Ve zamanı geldiğinde Rabbin sana (kalbinden geçeni) bağışlayacak ve seni hoşnut kılacak"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "O seni yetim olarak bulup bir sığınak vermedi mi"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Ve yolunu kaybetmiş görüp seni doğru yola ulaştırmadı mı"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "İhtiyaç içinde bulup seni tatmin etmedi mi"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Öyleyse yetime haksızlık yapma"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "yardım isteyeni asla geri çevirme"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "ve (her zaman) Rabbini(n) nimetlerini an"
        }
    ]
}