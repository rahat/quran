{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş, karanlığa gömüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ve yıldızlar ışıklarını yitirdiğinde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar kaybolup gittiğinde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "ve doğurmak üzere olan dişi develer başıboş bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "bütün hayvanlar bir araya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "ve denizler kaynadığında"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "bütün insanlar (yaptıklarıyla) eşleştirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "ve diri diri gömülen kız çocuklarına sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hangi suçtan dolayı öldürüldükleri"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(insanların yapıp ettiklerinin) dosyaları açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "ve gökyüzü açılıp ortaya serildiğinde"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "(cehennemin) yakıcı ateşi parladığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ve cennet gözler önüne getirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(o Gün) her insan, (kendisi için) ne hazırlamış olduğunu görecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! Hayır! Dönüp duran yıldızları tanıklığa çağırırım"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "yörüngelerinde akan ve kaybolan gezegenleri"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "ve kararan geceyi"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ve soluk almaya başlayan sabahı"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "bakın, bu (ilahi kelam), gerçekten soylu bir elçinin (vahyedilmiş) sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "güç bahşedilmiş, kudret ve egemenlik tahtının Sahibi nezdinde emin kılınmış"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "itaat edilen ve güvene layık birinin (sözü)"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Çünkü, bu arkadaşınız bir deli değil"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "o gerçekten (meleği) gördü, berrak bir ufukta (gördü) onu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "o, (başka birine vahyedilmiş olan) insan kavrayışının ötesindeki şeylerin bilgisinden dolayı onları kıskanan biri değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu (mesaj), lanetlenmiş bir şeytani gücün sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Öyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu (mesaj), bütün insanlık için bir öğüt ve hatırlatmadan başka bir şey değildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "doğru yolda yürümek isteyen her biriniz için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ama Allah, bütün alemlerin Rabbi, (o yolu size göstermeyi) istemedikçe siz onu isteyemezsiniz"
        }
    ]
}