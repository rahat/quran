{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Vois-tu celui qui qualifie de mensonge l’avenement du Jour du Jugement"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "C’est celui qui repousse l’orphelin"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "et qui n’incite pas a nourrir le pauvre"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Malheur a ceux qui pratiquent la salat (la priere)"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(mais) qui sont oublieux de leur salat"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "ne l’accomplissent que par ostentation"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "et qui refusent toute aide a leur prochain"
        }
    ]
}