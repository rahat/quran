{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Ne t’avons-Nous pas epanoui le cœur"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "soulage de ton fardeau"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "qui te faisait ployer le dos (qui t’accablait)"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "et eleve ta renommee"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "En verite, a la difficulte succede la facilite"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Certes, a la difficulte succede la facilite"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Aussi, lorsque tu te liberes (de tes occupations), recueille-toi"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "et aspire a (l’agrement de) ton Seigneur"
        }
    ]
}