{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Yeroo samiin dhodhoote"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yeroo urjiiwwan harca'an"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Yeroo galaanonni walitti makaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Yeroo qabroonni gara gaggalfamtee du’aa ishee keessa jiru ol baafte"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(Yeroo san) lubbuun hundi waan dabarfatte (hojjattee)fi dhiifte ni beekti"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Yaa namootaa! Gooftaa kee kan Arjaa ta'etti (amanuu irraa) maaltu si gowwoomse"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Isa si uumee, ergasii si guutee, si sirreesse"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Boca fedhe keessatti walitti si qabe (sanarraa maaltu si gowwoomse)"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Dhorgamaa! Dhugumatti, guyyaa murtii ni sobsiiftu"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Dhugumatti, isin irra to’attootatu jiru"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Kabajamoo, barreessitoota kan ta’an"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Waan isin dalagdan ni beeku"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Dhugumatti, warri toltuu hojjatan qananii keessa jiraatu"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Warri hamtuu hojjatan immoo ibidda keessa jiraatu"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Guyyaa murtii ishee seenu"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Isaan ishee irraa hin fagaatanu"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sila guyyaan murtii maal akka ta'e maaltu si beeksise"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ergasii guyyaan murtii maal akka ta'e maaltu si beeksise"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "(Inni) guyyaa lubbuun tokko lubbuu biraatiif homaa gochuu hin dandeenyeGuyyaa san ajajni (hundi) kan Rabbiiti"
        }
    ]
}