{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Mjer për çdo përqeshës – shpifës"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "që grumbullon pasuri dhe e ruan, (për ardhmërinë e ëndërruar)"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "dhe mendon që ajo pasuri e tij, do ta bëjë të pavdekshëm"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Jo, jo! Mashtrohet! Ai, me të vërtetë, do të hidhet (në) Hutameh (Skëterrë), i habitur"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "E kush të tregon ty se ç’është el-Hutameh"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Ai është zjarri i ndezur i Zotit"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "i cili do të depërtojë deri në zemër"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Ai (zjarri) do të jetë i mbyllur mbi ta (si saç)"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "në shtylla të gjata flakëruese"
        }
    ]
}