    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "The Striking Calamity"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "What is the Striking Calamity"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "How do you know what the Striking Calamity is"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "On that Day people will be like scattered moths"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "and the mountains will be like carded wool"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Then the one whose scales of good deeds are heavy"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "will have a pleasant life"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "But the one whose scales of good deeds are light"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "his abode will be the abyss"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "And how do you know what it is"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "It is a Blazing Fire"
        }
    ]
}