{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "هنگامی که واقعۀ [قیامت] رخ دهد،"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "[خواهید دید كه‌] در وقوع آن دروغى نیست؛"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "[گروهى را] خوار مى‌كند [و گروهى را] رفعتِ مقام مى‌بخشد"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "آنگاه كه زمین به سختى لرزانده شود"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و کوه‌ها به شدت متلاشى شوند"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "و [به صورت] غبارى پراكنده درآیند"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما به سه گروه تقسیم شوید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "[گروه نخست:] سعادتمندان [هستند]؛ چه سعادتمندانی [و چه نیکو جایگاهی]"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و [گروه دیگر:] تیره‌بختان [هستند]؛ چه تیره‌بختانی [و چه بد جایگاهی]"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و [سومین گروه:] پیشگامان که [در نیکی‌ها] سبقت گرفتند"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "آنان مقرّبان [درگاه الهی] هستند"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در باغ‌های پرنعمت [بهشت جای دارند]"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروه بسیاری از آنان، از پیشینیان هستند [خواه از امت اسلام یا از امت‌های گذشته]؛"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از آیندگان [و متأخران] هستند"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "كه بر تخت‌های گوهرنشان،"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "روبروى هم تكیه زده‌اند"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "نوجوانانى جاودان [با طراوت،] همواره گردِ آنان [به خدمت] مى‌گردند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با جام‌ها و کوزه‌ها و پیاله‌هایی از شراب جارى؛"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "[شرابی] كه از نوشیدنش سردرد نمی‌گیرند و دستخوشِ مستى نمی‌شوند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و از هر میوه‌اى كه بخواهند [در اختیار دارند]؛"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و از هر گوشتِ پرنده‌اى که میل داشته باشند؛"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و [همسرانی از] حور العین؛"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "همچون مروارید پنهان در صدف؛"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "[اینها همه،] پاداش اعمالشان است"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آنجا [سخن] یاوه و گناه‌آلودی نخواهند شنید؛"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "مگر سلام و درود [فرشتگان و بهشتیان]"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و [اما] سعادتمندان؛ چه سعادتمندانی"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در کنار درختان بی‌خارِ سدر [هستند]؛"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و درختان موز با خوشه‌هاى برهم‌نشسته"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "با سایه‌اى گسترده"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبِ همواره روان؛"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه‌هاى فراوان"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "كه نه تمام می‌شود و نه ممنوع می‌گردد،"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و بسترهای برافراشته [و ارزشمند]"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "و همسرانى که با آفرینشى ویژه پدید آوردیم [که زیبایی و جوانیِ جاودان دارند]؛"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "همواره دوشیزه‌اند"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "و شوهردوستانی هم‌سن‌وسال هستند"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "[همۀ این نعمت‌ها،] براى سعادتمندان است"
        }
    ]
}