{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "واليل اذا يغشى (يغشى: يغطي بظلامه الارض)"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "والنهار اذا تجلى (تجلى: انكشف بضيايه)"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "وما خلق الذكر والانثى"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "ان سعيكم لشتى (لشتى: لمختلف)"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "فاما من اعطى واتقى (اعطى: بذل ماله متصدقا)"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "وصدق بالحسنى (بالحسنى: بالثواب على اعماله)"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "فسنيسره لليسرى (لليسرى: لكل خير، وسعادة)"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "واما من بخل واستغنى"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "وكذب بالحسنى"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "فسنيسره للعسرى (للعسرى: لكل عسر، وشقاوة)"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "وما يغني عنه ماله اذا تردى (وما يغني: لا ينفعه, تردى: وقع في النار)"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "ان علينا للهدى (ان علينا للهدى: علينا ان نبين طريق الهدى؛ فضلا منا ورحمة)"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "وان لنا للاخرة والاولى"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "فانذرتكم نارا تلظى (تلظى: تتوهج)"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "لا يصلىها الا الاشقى (لا يصلاها: لا يدخلها، ويقاسي حرها)"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "الذي كذب وتولى"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "وسيجنبها الاتقى (وسيجنبها: سيبعد عنها)"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "الذي يوتي ماله يتزكى"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "وما لاحد عنده من نعمة تجزى (تجزى: تكافا؛ فليس انفاقه مكافاة لمن احسن اليه)"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "الا ابتغاء وجه ربه الاعلى"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "ولسوف يرضى"
        }
    ]
}