{
    "rukus": [
        {
            "chapter": 26,
            "verse": 70,
            "text": "اذ قال لابيه وقومه ما تعبدون"
        },
        {
            "chapter": 26,
            "verse": 71,
            "text": "قالوا نعبد اصناما فنظل لها عكفين (عاكفين: مقيمين على عبادتها)"
        },
        {
            "chapter": 26,
            "verse": 72,
            "text": "قال هل يسمعونكم اذ تدعون"
        },
        {
            "chapter": 26,
            "verse": 73,
            "text": "او ينفعونكم او يضرون"
        },
        {
            "chapter": 26,
            "verse": 74,
            "text": "قالوا بل وجدنا ءاباءنا كذلك يفعلون"
        },
        {
            "chapter": 26,
            "verse": 75,
            "text": "قال افرءيتم ما كنتم تعبدون (افرايتم: ابصرتم بتدبر)"
        },
        {
            "chapter": 26,
            "verse": 76,
            "text": "انتم وءاباوكم الاقدمون"
        },
        {
            "chapter": 26,
            "verse": 77,
            "text": "فانهم عدو لي الا رب العلمين"
        },
        {
            "chapter": 26,
            "verse": 78,
            "text": "الذي خلقني فهو يهدين"
        },
        {
            "chapter": 26,
            "verse": 79,
            "text": "والذي هو يطعمني ويسقين"
        },
        {
            "chapter": 26,
            "verse": 80,
            "text": "واذا مرضت فهو يشفين"
        },
        {
            "chapter": 26,
            "verse": 81,
            "text": "والذي يميتني ثم يحيين"
        },
        {
            "chapter": 26,
            "verse": 82,
            "text": "والذي اطمع ان يغفر لي خطيتي يوم الدين"
        },
        {
            "chapter": 26,
            "verse": 83,
            "text": "رب هب لي حكما والحقني بالصلحين (حكما: علما وفهما)"
        },
        {
            "chapter": 26,
            "verse": 84,
            "text": "واجعل لي لسان صدق في الاخرين (لسان صدق: ثناء حسنا, الاخرين: من ياتون بعدي الى يوم القيامة)"
        },
        {
            "chapter": 26,
            "verse": 85,
            "text": "واجعلني من ورثة جنة النعيم"
        },
        {
            "chapter": 26,
            "verse": 86,
            "text": "واغفر لابي انه كان من الضالين"
        },
        {
            "chapter": 26,
            "verse": 87,
            "text": "ولا تخزني يوم يبعثون"
        },
        {
            "chapter": 26,
            "verse": 88,
            "text": "يوم لا ينفع مال ولا بنون"
        },
        {
            "chapter": 26,
            "verse": 89,
            "text": "الا من اتى الله بقلب سليم (سليم: سالم من الشرك والنفاق والضغينة)"
        },
        {
            "chapter": 26,
            "verse": 90,
            "text": "وازلفت الجنة للمتقين (وازلفت: قربت)"
        },
        {
            "chapter": 26,
            "verse": 91,
            "text": "وبرزت الجحيم للغاوين (وبرزت: اظهرت)"
        },
        {
            "chapter": 26,
            "verse": 92,
            "text": "وقيل لهم اين ما كنتم تعبدون"
        },
        {
            "chapter": 26,
            "verse": 93,
            "text": "من دون الله هل ينصرونكم او ينتصرون"
        },
        {
            "chapter": 26,
            "verse": 94,
            "text": "فكبكبوا فيها هم والغاون (فكبكبوا: فجمعوا، والقوا)"
        },
        {
            "chapter": 26,
            "verse": 95,
            "text": "وجنود ابليس اجمعون"
        },
        {
            "chapter": 26,
            "verse": 96,
            "text": "قالوا وهم فيها يختصمون"
        },
        {
            "chapter": 26,
            "verse": 97,
            "text": "تالله ان كنا لفي ضلل مبين"
        },
        {
            "chapter": 26,
            "verse": 98,
            "text": "اذ نسويكم برب العلمين"
        },
        {
            "chapter": 26,
            "verse": 99,
            "text": "وما اضلنا الا المجرمون"
        },
        {
            "chapter": 26,
            "verse": 100,
            "text": "فما لنا من شفعين"
        },
        {
            "chapter": 26,
            "verse": 101,
            "text": "ولا صديق حميم (حميم: مشفق يهتم بامرنا)"
        },
        {
            "chapter": 26,
            "verse": 102,
            "text": "فلو ان لنا كرة فنكون من المومنين (كرة: رجعة الى الدنيا)"
        },
        {
            "chapter": 26,
            "verse": 103,
            "text": "ان في ذلك لاية وما كان اكثرهم مومنين"
        },
        {
            "chapter": 26,
            "verse": 104,
            "text": "وان ربك لهو العزيز الرحيم"
        }
    ]
}