{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "سبح اسم ربك الاعلى (سبح اسم ربك: نزه ربك ذاكرا اسمه بلسانك, الاعلى: الذي له علو الذات، وعلو القدر، وعلو القهر)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "الذي خلق فسوى (فسوى: اتقن خلقه، واحسنه)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "والذي قدر فهدى (فهدى: يسر له ما يناسبه)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "والذي اخرج المرعى (المرعى: الكلا الاخضر)"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "فجعله غثاء احوى (غثاء: هشيما جافا, احوى: متغيرا)"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "سنقريك فلا تنسى"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "الا ما شاء الله انه يعلم الجهر وما يخفى (الا ما شاء الله: الا ما اراد الله ان ينسخ تلاوته وحكمه، وينسيك اياه)"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "ونيسرك لليسرى (لليسرى: للطريقة الميسرة في شريعتك، وحياتك)"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "فذكر ان نفعت الذكرى"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "سيذكر من يخشى"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "ويتجنبها الاشقى"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "الذي يصلى النار الكبرى (يصلى النار: يدخلها، ويقاسي حرها)"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ثم لا يموت فيها ولا يحيى"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "قد افلح من تزكى (افلح: فاز، وظفر بالمطلوب, تزكى: طهر نفسه من المعاصي، وحلاها بالطاعة)"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "وذكر اسم ربه فصلى"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بل توثرون الحيوة الدنيا"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "والاخرة خير وابقى"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "ان هذا لفي الصحف الاولى (ان هذا: اي: من قوله: {قد افلح من تزكى)"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صحف ابرهيم وموسى"
        }
    ]
}