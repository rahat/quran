{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "والعديت ضبحا (والعاديات ضبحا: قسم بالخيل الجارية في سبيل الله، حين يظهر صوتها من سرعة عدوها)"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "فالموريت قدحا (فالموريات قدحا: فالموقدات بحوافرها النار من شدة عدوها)"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "فالمغيرت صبحا (فالمغيرات صبحا: فالخيل التي تغير وتباغت العدو صباحا)"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "فاثرن به نقعا (فاثرن: فهيجن, نقعا: غبارا)"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "فوسطن به جمعا (فوسطن به جمعا: فتوسطن بركبانهن جموع الاعداء)"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "ان الانسن لربه لكنود (لكنود: لجحود)"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "وانه على ذلك لشهيد (لشهيد: لمقر على جحوده)"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "وانه لحب الخير لشديد (الخير: المال)"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "۞افلا يعلم اذا بعثر ما في القبور (بعثر: اثير، واخرج)"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "وحصل ما في الصدور (وحصل: استخرج، وابرز)"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "ان ربهم بهم يوميذ لخبير"
        }
    ]
}