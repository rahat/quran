{
    "rukus": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞احشروا الذين ظلموا وازوجهم وما كانوا يعبدون (احشروا: اجمعوا, وازواجهم: نظراءهم، وقرناءهم في الدنيا)"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "من دون الله فاهدوهم الى صرط الجحيم (فاهدوهم: سوقوهم سوقا عنيفا)"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وقفوهم انهم مسولون (وقفوهم: احبسوهم قبل ان يصلوا الى جهنم)"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "ما لكم لا تناصرون"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بل هم اليوم مستسلمون"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "واقبل بعضهم على بعض يتساءلون"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قالوا انكم كنتم تاتوننا عن اليمين (عن اليمين: من قبل الحق والدين)"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قالوا بل لم تكونوا مومنين"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وما كان لنا عليكم من سلطن بل كنتم قوما طغين (سلطان: حجة، او قوة, طاغين: مجاوزين الحد في العصيان)"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فحق علينا قول ربنا انا لذايقون (فحق علينا: وجب علينا)"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فاغوينكم انا كنا غوين"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فانهم يوميذ في العذاب مشتركون"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "انا كذلك نفعل بالمجرمين"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "انهم كانوا اذا قيل لهم لا اله الا الله يستكبرون"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "ويقولون اينا لتاركوا ءالهتنا لشاعر مجنون"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بل جاء بالحق وصدق المرسلين"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "انكم لذايقوا العذاب الاليم"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وما تجزون الا ما كنتم تعملون"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "الا عباد الله المخلصين (المخلصين: الذين اخلصوا في عبادة الله؛ فاخلصهم، واختصهم برحمته)"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "اوليك لهم رزق معلوم"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فوكه وهم مكرمون"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "في جنت النعيم"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "على سرر متقبلين"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يطاف عليهم بكاس من معين (بكاس: بخمر, من معين: من انهار جارية لا يخافون انقطاعها)"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بيضاء لذة للشربين"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لا فيها غول ولا هم عنها ينزفون (لا فيها غول: ليس فيها ما يغتال عقولهم, ولا هم عنها ينزفون: لا يسكرون، ولا تضر ابدانهم)"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وعندهم قصرت الطرف عين (قاصرات الطرف: عفيفات لا ينظرن الى غير ازواجهن, عين: حسان الاعين)"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كانهن بيض مكنون (مكنون: لم تمسه الايدي)"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فاقبل بعضهم على بعض يتساءلون"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قال قايل منهم اني كان لي قرين (قرين: صاحب ملازم لي)"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يقول اءنك لمن المصدقين"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "اءذا متنا وكنا ترابا وعظما اءنا لمدينون (لمدينون: لمجزيون، ومحاسبون)"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قال هل انتم مطلعون"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فاطلع فرءاه في سواء الجحيم"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قال تالله ان كدت لتردين (ان كدت: انك قاربت, لتردين: لتهلكني بضلالك، واغوايك)"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "ولولا نعمة ربي لكنت من المحضرين (المحضرين: من احضروا في العذاب معك)"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "افما نحن بميتين"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "الا موتتنا الاولى وما نحن بمعذبين"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "ان هذا لهو الفوز العظيم"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لمثل هذا فليعمل العملون"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "اذلك خير نزلا ام شجرة الزقوم (نزلا: ضيافة, شجرة الزقوم: شجرة خبيثة، ملعونة، من طعام اهل النار)"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "انا جعلنها فتنة للظلمين (فتنة: ابتلاء لهم؛ حيث كذبوا بوجود شجرة في النار)"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "انها شجرة تخرج في اصل الجحيم (اصل الجحيم: قعر جهنم)"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طلعها كانه رءوس الشيطين (طلعها: ثمرها)"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فانهم لاكلون منها فمالون منها البطون"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثم ان لهم عليها لشوبا من حميم (لشوبا: لخلطا، ومزاجا, حميم: من ماء حار بالغ الحرارة)"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثم ان مرجعهم لالى الجحيم"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "انهم الفوا ءاباءهم ضالين (الفوا: وجدوا)"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فهم على ءاثرهم يهرعون (يهرعون: يسرعون في متابعتهم على الضلال)"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "ولقد ضل قبلهم اكثر الاولين"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "ولقد ارسلنا فيهم منذرين"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فانظر كيف كان عقبة المنذرين"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "الا عباد الله المخلصين"
        }
    ]
}