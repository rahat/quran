{
    "chapter": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "الرحمن"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "علم القرءان"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "خلق الانسن"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "علمه البيان (البيان: النطق بان يبين عما في نفسه بالنطق)"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "الشمس والقمر بحسبان (بحسبان: يجريان متعاقبين، بحساب متقن لا يضطرب)"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "والنجم والشجر يسجدان (والنجم: الكوكب في السماء)"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "والسماء رفعها ووضع الميزان (ووضع الميزان: وضع في الارض العدل)"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "الا تطغوا في الميزان (الا تطغوا: ليلا تعتدوا، وتخونوا)"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "واقيموا الوزن بالقسط ولا تخسروا الميزان (بالقسط: بالعدل, ولا تخسروا: ولا تنقصوا)"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "والارض وضعها للانام (وضعها للانام: مهدها؛ ليستقر عليها الخلق)"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "فيها فكهة والنخل ذات الاكمام (الاكمام: الاوعية التي يكون منها التمر)"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "والحب ذو العصف والريحان (والحب ذو العصف: وفيها الحب ذو القشر والتبن؛ رزقا لكم ولانعامكم, والريحان: كل نبت طيب الرايحة)"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "خلق الانسن من صلصل كالفخار (الانسان: ادم - عليه السلام -, صلصال: طين يابس يسمع له صلصلة, كالفخار: هو الطين الذي يطبخ ليتحجر)"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "وخلق الجان من مارج من نار (الجان: ابليس, مارج من نار: لهب النار المختلط بعضه ببعض)"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "فباي ءالاء ربكما تكذبان (الاء ربكما: نعم ربكما, تكذبان: يا معشر الانس والجن)"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "رب المشرقين ورب المغربين (المشرقين: مشرق الشمس؛ في الشتاء، والصيف, المغربين: مغرب الشمس؛ في الشتاء، والصيف)"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "مرج البحرين يلتقيان (مرج البحرين: خلط ماء البحرين: العذب، والمالح)"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "بينهما برزخ لا يبغيان (برزخ: حاجز, لا يبغيان: لا يطغى احدهما على الاخر، ويذهب بخصايصه)"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "يخرج منهما اللولو والمرجان"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "وله الجوار المنشات في البحر كالاعلم (الجوار: السفن الجارية الضخمة, المنشات: المرفوعات الاشرعة, كالاعلام: كالجبال في عظمها)"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 26,
            "text": "كل من عليها فان (فان: هالك)"
        },
        {
            "chapter": 55,
            "verse": 27,
            "text": "ويبقى وجه ربك ذو الجلل والاكرام (ذو الجلال: صاحب العظمة، والكبرياء, والاكرام: الفضل، والجود)"
        },
        {
            "chapter": 55,
            "verse": 28,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 29,
            "text": "يسله من في السموت والارض كل يوم هو في شان (في شان: اي: امر فيعز ويذل، ويعطي ويمنع، ويحيي ويميت)"
        },
        {
            "chapter": 55,
            "verse": 30,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 31,
            "text": "سنفرغ لكم ايه الثقلان"
        },
        {
            "chapter": 55,
            "verse": 32,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 33,
            "text": "يمعشر الجن والانس ان استطعتم ان تنفذوا من اقطار السموت والارض فانفذوا لا تنفذون الا بسلطن (تنفذوا: تجدون منفذا تهربون منه, اقطار: نواحي, فانفذوا: اهربوا (امر تعجيز), بسلطان: بقوة، وكمال قدرة"
        },
        {
            "chapter": 55,
            "verse": 34,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 35,
            "text": "يرسل عليكما شواظ من نار ونحاس فلا تنتصران (شواظ: لهب خالص, ونحاس: نحاس مذاب، يصب على رووسكم، او دخان لا لهب فيه, فلا تنتصران: فلا ينصر بعضكم بعضا)"
        },
        {
            "chapter": 55,
            "verse": 36,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 37,
            "text": "فاذا انشقت السماء فكانت وردة كالدهان (وردة: حمراء كلون الورد, كالدهان: كالزيت المغلي، او كالجلد الاحمر)"
        },
        {
            "chapter": 55,
            "verse": 38,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 39,
            "text": "فيوميذ لا يسل عن ذنبه انس ولا جان"
        },
        {
            "chapter": 55,
            "verse": 40,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 41,
            "text": "يعرف المجرمون بسيمهم فيوخذ بالنوصي والاقدام (بسيماهم: بعلاماتهم, فيوخذ بالنواصي: تاخذهم ملايكة العذاب بمقدمة رووسهم، واقدامهم فترميهم في النار)"
        },
        {
            "chapter": 55,
            "verse": 42,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 43,
            "text": "هذه جهنم التي يكذب بها المجرمون"
        },
        {
            "chapter": 55,
            "verse": 44,
            "text": "يطوفون بينها وبين حميم ءان (يطوفون: يترددون, حميم ان: ماء حار قد بلغ الغاية في الحرارة)"
        },
        {
            "chapter": 55,
            "verse": 45,
            "text": "فباي ءالاء ربكما تكذبان (خاف مقام ربه: خاف القيام بين يدي ربه في موقف الحساب)"
        },
        {
            "chapter": 55,
            "verse": 46,
            "text": "ولمن خاف مقام ربه جنتان"
        },
        {
            "chapter": 55,
            "verse": 47,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 48,
            "text": "ذواتا افنان (افنان: اغصان كثيرة نضرة)"
        },
        {
            "chapter": 55,
            "verse": 49,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 50,
            "text": "فيهما عينان تجريان"
        },
        {
            "chapter": 55,
            "verse": 51,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 52,
            "text": "فيهما من كل فكهة زوجان (زوجان: صنفان)"
        },
        {
            "chapter": 55,
            "verse": 53,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 54,
            "text": "متكين على فرش بطاينها من استبرق وجنى الجنتين دان (بطاينها: بطانتها, استبرق: غليظ الديباج, وجنى: ثمر, دان: قريب القطاف)"
        },
        {
            "chapter": 55,
            "verse": 55,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 56,
            "text": "فيهن قصرت الطرف لم يطمثهن انس قبلهم ولا جان (قاصرات الطرف: قصرن ابصارهن على ازواجهن؛ فلا ينظرن الى غيرهم, يطمثهن: يطاهن)"
        },
        {
            "chapter": 55,
            "verse": 57,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 58,
            "text": "كانهن الياقوت والمرجان"
        },
        {
            "chapter": 55,
            "verse": 59,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 60,
            "text": "هل جزاء الاحسن الا الاحسن"
        },
        {
            "chapter": 55,
            "verse": 61,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 62,
            "text": "ومن دونهما جنتان (ومن دونهما: اي: ادنى من الجنتين السابقتين)"
        },
        {
            "chapter": 55,
            "verse": 63,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 64,
            "text": "مدهامتان (مدهامتان: خضراوان قد اشتدت خضرتهما حتى مالت الى السواد)"
        },
        {
            "chapter": 55,
            "verse": 65,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 66,
            "text": "فيهما عينان نضاختان (نضاختان: فوارتان بالماء؛ لا تنقطعان)"
        },
        {
            "chapter": 55,
            "verse": 67,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 68,
            "text": "فيهما فكهة ونخل ورمان"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "فيهن خيرت حسان (خيرات: زوجات طيبات الاخلاق)"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "حور مقصورت في الخيام (حور: نساء بيض حسان, مقصورات: مستورات مصونات)"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "لم يطمثهن انس قبلهم ولا جان (يطمثهن: يطاهن)"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "متكين على رفرف خضر وعبقري حسان (رفرف خضر: وسايد ذوات اغطية خضر, وعبقري: فرش، وبسط)"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "تبرك اسم ربك ذي الجلل والاكرام (تبارك: كثرت بركته، وخيره)"
        }
    ]
}