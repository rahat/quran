{
    "maqras": [
        {
            "chapter": 37,
            "verse": 83,
            "text": "۞وان من شيعته لابرهيم (شيعته: من تابعه على دينه، ومنهاجه)"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "اذ جاء ربه بقلب سليم (سليم: بريء من كل اعتقاد باطل، وخلق ذميم)"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "اذ قال لابيه وقومه ماذا تعبدون"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "ايفكا ءالهة دون الله تريدون (ايفكا الهة: اتريدون الهة مختلقة تعبدونها؟)"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "فما ظنكم برب العلمين"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "فنظر نظرة في النجوم (فنظر: رفع بصره الى النجوم متفكرا فيما يعتذر به من الخروج معهم)"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "فقال اني سقيم (سقيم: مريض؛ وهذا تعريض منه؛ اراد: اني لا اخلو من سقم كعادة الناس او اني ضعيف، او سقيم القلب من عبادتكم غير الله)"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "فتولوا عنه مدبرين"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "فراغ الى ءالهتهم فقال الا تاكلون (فراغ الى الهتهم: مال بخفية مسرعا الى الاصنام)"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "ما لكم لا تنطقون"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "فراغ عليهم ضربا باليمين (باليمين: بيده اليمنى)"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "فاقبلوا اليه يزفون (يزفون: يعدون مسرعين غاضبين)"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "قال اتعبدون ما تنحتون"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "والله خلقكم وما تعملون"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "قالوا ابنوا له بنينا فالقوه في الجحيم"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "فارادوا به كيدا فجعلنهم الاسفلين"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "وقال اني ذاهب الى ربي سيهدين"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "رب هب لي من الصلحين"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "فبشرنه بغلم حليم (بغلام حليم: هو: اسماعيل - عليه السلام)"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "فلما بلغ معه السعي قال يبني اني ارى في المنام اني اذبحك فانظر ماذا ترى قال يابت افعل ما تومر ستجدني ان شاء الله من الصبرين (بلغ معه السعي: وصل درجة العمل معه، وقضاء حوايجه)"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "فلما اسلما وتله للجبين (اسلما: استسلما لامر الله, وتله للجبين: القاه على جانب جبهته على الارض)"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "وندينه ان يابرهيم"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "قد صدقت الرءيا انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "ان هذا لهو البلوا المبين (البلاء المبين: الاختبار الشاق الذي ابان عن صدق ايمانه)"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "وفدينه بذبح عظيم (وفديناه: جعلنا بديلا عنه, بذبح: بكبش)"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "وتركنا عليه في الاخرين (وتركنا عليه في الاخرين: ابقينا له ذكرا حسنا فيمن جاء بعده)"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "سلم على ابرهيم"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "انه من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "وبشرنه باسحق نبيا من الصلحين"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "وبركنا عليه وعلى اسحق ومن ذريتهما محسن وظالم لنفسه مبين"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "ولقد مننا على موسى وهرون"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "ونجينهما وقومهما من الكرب العظيم (الكرب العظيم: الغرق في البحر، والعبودية لفرعون)"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "ونصرنهم فكانوا هم الغلبين"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "وءاتينهما الكتب المستبين"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "وهدينهما الصرط المستقيم"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "وتركنا عليهما في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سلم على موسى وهرون"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "انهما من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "وان الياس لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "اذ قال لقومه الا تتقون"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "اتدعون بعلا وتذرون احسن الخلقين (اتدعون بعلا: اتعبدون الصنم المسمى: «بعلا»)"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "الله ربكم ورب ءابايكم الاولين"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "فكذبوه فانهم لمحضرون (لمحضرون: لمجموعون للحساب، والعقاب)"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "الا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "وتركنا عليه في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "سلم على ال ياسين (ال ياسين: هو: الياس نفسه، او: هو واتباعه)"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "انه من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "وان لوطا لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "اذ نجينه واهله اجمعين"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "الا عجوزا في الغبرين (الغابرين: الباقين في العذاب)"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "ثم دمرنا الاخرين"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "وانكم لتمرون عليهم مصبحين"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "وباليل افلا تعقلون"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "وان يونس لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "اذ ابق الى الفلك المشحون (ابق: هرب من بلده من غير اذن ربه, الفلك: السفينة, المشحون: المملوء امتعة، وركابا)"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "فساهم فكان من المدحضين (فساهم: اقترع ركاب السفينة؛ لتخفيف الحمولة خوف الغرق, المدحضين: المغلوبين بالقرعة)"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "فالتقمه الحوت وهو مليم (فالتقمه: ابتلعه, مليم: ات بما يلام عليه)"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "فلولا انه كان من المسبحين (المسبحين: العابدين الذاكرين، الذين يقول احدهم - اذا وقع في كربة -: {لا اله الا انت سبحانك اني كنت من الظالمين} [الانبياء]"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "للبث في بطنه الى يوم يبعثون"
        }
    ]
}