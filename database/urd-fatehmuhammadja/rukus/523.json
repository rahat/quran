{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج لپیٹ لیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "جب تارے بےنور ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب بیانے والی اونٹنیاں بےکار ہو جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب وحشی جانور جمع اکٹھے ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب دریا آگ ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب روحیں (بدنوں سے) ملا دی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب لڑکی سے جو زندہ دفنا دی گئی ہو پوچھا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ وہ کس گناہ پرماری گئی"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب (عملوں کے) دفتر کھولے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمانوں کی کھال کھینچ لی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب دوزخ (کی آگ) بھڑکائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور بہشت جب قریب لائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تب ہر شخص معلوم کر لے گا کہ وہ کیا لے کر آیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "ہم کو ان ستاروں کی قسم جو پیچھے ہٹ جاتے ہیں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(اور) جو سیر کرتے اور غائب ہو جاتے ہیں"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی قسم جب ختم ہونے لگتی ہے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی قسم جب نمودار ہوتی ہے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "کہ بےشک یہ (قرآن) فرشتہٴ عالی مقام کی زبان کا پیغام ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو صاحب قوت مالک عرش کے ہاں اونچے درجے والا ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "سردار (اور) امانت دار ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور (مکے والو) تمہارے رفیق (یعنی محمدﷺ) دیوانے نہیں ہیں"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "بےشک انہوں نے اس (فرشتے) کو (آسمان کے کھلے یعنی) مشرقی کنارے پر دیکھا ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ پوشیدہ باتوں (کے ظاہر کرنے) میں بخیل نہیں"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ شیطان مردود کا کلام نہیں"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم کدھر جا رہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو جہان کے لوگوں کے لیے نصیحت ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(یعنی) اس کے لیے جو تم میں سے سیدھی چال چلنا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم کچھ بھی نہیں چاہ سکتے مگر وہی جو خدائے رب العالمین چاہے"
        }
    ]
}