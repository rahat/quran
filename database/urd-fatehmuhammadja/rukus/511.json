{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "ہاں ہاں (ہمیں) چاند کی قسم"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "اور رات کی جب پیٹھ پھیرنے لگے"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "اور صبح کی جب روشن ہو"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "کہ وہ (آگ) ایک بہت بڑی (آفت) ہے"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "(اور) بنی آدم کے لئے مؤجب خوف"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "جو تم میں سے آگے بڑھنا چاہے یا پیچھے رہنا چاہے"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "ہر شخص اپنے اعمال کے بدلے گرو ہے"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "مگر داہنی طرف والے (نیک لوگ)"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "(کہ) وہ باغہائے بہشت میں (ہوں گے اور) پوچھتے ہوں گے"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "(یعنی آگ میں جلنے والے) گنہگاروں سے"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "کہ تم دوزخ میں کیوں پڑے؟"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "وہ جواب دیں گے کہ ہم نماز نہیں پڑھتے تھے"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "اور نہ فقیروں کو کھانا کھلاتے تھے"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "اور اہل باطل کے ساتھ مل کر (حق سے) انکار کرتے تھے"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "اور روز جزا کو جھٹلاتے تھے"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "یہاں تک کہ ہمیں موت آگئی"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "(تو اس حال میں) سفارش کرنے والوں کی سفارش ان کے حق میں کچھ فائدہ نہ دے گی"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "ان کو کیا ہوا ہے کہ نصیحت سے روگرداں ہو رہے ہیں"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گویا گدھے ہیں کہ بدک جاتے ہیں"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "(یعنی) شیر سے ڈر کر بھاگ جاتے ہیں"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "اصل یہ ہے کہ ان میں سے ہر شخص یہ چاہتا ہے کہ اس کے پاس کھلی ہوئی کتاب آئے"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "ایسا ہرگز نہیں ہوگا۔ حقیقت یہ ہے کہ ان کو آخرت کا خوف ہی نہیں"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "کچھ شک نہیں کہ یہ نصیحت ہے"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "تو جو چاہے اسے یاد رکھے"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "اور یاد بھی تب ہی رکھیں گے جب خدا چاہے۔ وہی ڈرنے کے لائق اور بخشش کا مالک ہے"
        }
    ]
}