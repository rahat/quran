{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(محمد مصطفٰےﷺ) ترش رُو ہوئے اور منہ پھیر بیٹھے"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "کہ ان کے پاس ایک نابینا آیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "اور تم کو کیا خبر شاید وہ پاکیزگی حاصل کرتا"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا سوچتا تو سمجھانا اسے فائدہ دیتا"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "جو پروا نہیں کرتا"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "اس کی طرف تو تم توجہ کرتے ہو"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حالانکہ اگر وہ نہ سنورے تو تم پر کچھ (الزام) نہیں"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اور جو تمہارے پاس دوڑتا ہوا آیا"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور (خدا سے) ڈرتا ہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "اس سے تم بےرخی کرتے ہو"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "دیکھو یہ (قرآن) نصیحت ہے"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس جو چاہے اسے یاد رکھے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "قابل ادب ورقوں میں (لکھا ہوا)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "جو بلند مقام پر رکھے ہوئے (اور) پاک ہیں"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "لکھنے والوں کے ہاتھوں میں"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "جو سردار اور نیکو کار ہیں"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "انسان ہلاک ہو جائے کیسا ناشکرا ہے"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "اُسے (خدا نے) کس چیز سے بنایا؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "نطفے سے بنایا پھر اس کا اندازہ مقرر کیا"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھر اس کے لیے رستہ آسان کر دیا"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اس کو موت دی پھر قبر میں دفن کرایا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہے گا اسے اٹھا کھڑا کرے گا"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "کچھ شک نہیں کہ خدا نے اسے جو حکم دیا اس نے اس پر عمل نہ کیا"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "تو انسان کو چاہیئے کہ اپنے کھانے کی طرف نظر کرے"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "بے شک ہم ہی نے پانی برسایا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر ہم ہی نے زمین کو چیرا پھاڑا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر ہم ہی نے اس میں اناج اگایا"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اور انگور اور ترکاری"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجوریں"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گھنے گھنے باغ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور میوے اور چارا"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(یہ سب کچھ) تمہارے اور تمہارے چارپایوں کے لیے بنایا"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "تو جب (قیامت کا) غل مچے گا"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "اس دن آدمی اپنے بھائی سے دور بھاگے گا"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور اپنی ماں اور اپنے باپ سے"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور اپنی بیوی اور اپنے بیٹے سے"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "ہر شخص اس روز ایک فکر میں ہو گا جو اسے (مصروفیت کے لیے) بس کرے گا"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "اور کتنے منہ اس روز چمک رہے ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خنداں و شاداں (یہ مومنان نیکو کار ہیں)"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور کتنے منہ ہوں گے جن پر گرد پڑ رہی ہو گی"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "(اور) سیاہی چڑھ رہی ہو گی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "یہ کفار بدکردار ہیں"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج لپیٹ لیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "جب تارے بےنور ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب بیانے والی اونٹنیاں بےکار ہو جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب وحشی جانور جمع اکٹھے ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب دریا آگ ہو جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب روحیں (بدنوں سے) ملا دی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب لڑکی سے جو زندہ دفنا دی گئی ہو پوچھا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ وہ کس گناہ پرماری گئی"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب (عملوں کے) دفتر کھولے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمانوں کی کھال کھینچ لی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب دوزخ (کی آگ) بھڑکائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور بہشت جب قریب لائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تب ہر شخص معلوم کر لے گا کہ وہ کیا لے کر آیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "ہم کو ان ستاروں کی قسم جو پیچھے ہٹ جاتے ہیں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(اور) جو سیر کرتے اور غائب ہو جاتے ہیں"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی قسم جب ختم ہونے لگتی ہے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی قسم جب نمودار ہوتی ہے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "کہ بےشک یہ (قرآن) فرشتہٴ عالی مقام کی زبان کا پیغام ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو صاحب قوت مالک عرش کے ہاں اونچے درجے والا ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "سردار (اور) امانت دار ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور (مکے والو) تمہارے رفیق (یعنی محمدﷺ) دیوانے نہیں ہیں"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "بےشک انہوں نے اس (فرشتے) کو (آسمان کے کھلے یعنی) مشرقی کنارے پر دیکھا ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ پوشیدہ باتوں (کے ظاہر کرنے) میں بخیل نہیں"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ شیطان مردود کا کلام نہیں"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم کدھر جا رہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو جہان کے لوگوں کے لیے نصیحت ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(یعنی) اس کے لیے جو تم میں سے سیدھی چال چلنا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم کچھ بھی نہیں چاہ سکتے مگر وہی جو خدائے رب العالمین چاہے"
        }
    ]
}