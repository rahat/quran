{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "Bhābō ūrdhbaśbāsē dhābamānadēra kathā"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "phalē yārā āgunēra phulaki chōṛē āghātēra chōṭē"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "āra yārā bhōrē abhiyāna cālāẏa"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "āra tāra phalē yārā dhūlō uṛāẏa"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "takhana ēra phalē sain'yadalakē bhēda karē yāẏa."
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Mānuṣa niścaẏa'i tāra prabhura prati baṛa akr̥tajña"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "āra sē ālabaṯ ē biṣaẏē abaśya pratyakṣadaśa."
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Āra niḥsandēha sē dhanasampadēra mōhē duranta."
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Tabē ki sē jānē nā yakhana kabaragulōẏa yā āchē tā tōlā habē"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "ēbaṁ antarē yā āchē tā prakāśa karā habē"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "niḥsandēha tādēra prabhu sē'idina tādēra sanbandhē sabiśēṣē abahita thākabēna."
        }
    ]
}