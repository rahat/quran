{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Yakhana ākāśa bidīrṇa habē"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "āra yakhana nakṣatrasaba bikṣipta habē"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "āra yakhana samudragulō ucchalita habē"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "āra yakhana kabaragulō unmōcita habē"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "takhana pratyēkē'i jānatē pārabē sē kī āga-bāṛiẏēchē, āra kī sē pēchanē phēlē rēkhēchē."
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ōhē mānaba! Kisē tōmākē bhuliẏēchē tōmāra mahānubhaba prabhusanbandhē"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "yini tōmākē sr̥ṣṭi karēchēna, tārapara tōmākē suṭhāma karēchēna, tārapara tōmākē susamañjasa karēchēna"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "yē ākr̥titē tini cēẏēchēna sē'ibhābē tini tōmākē gaṭhana karēchēna"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Nā, tōmarā baraṁ sadbicārakē'i mithyārōpa karacha."
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Athaca tōmādēra uparē niścaẏa'i tattbābadhāẏaka raẏēchē"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "sam'mānita lipikāragaṇa"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "tārā jānē tōmarā yā-kichu kara."
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Dhārmikarā niścaẏa thākabē ānandēra'i mājhē"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "āra pāpācārīrā ālabaṯ thākabē bhaẏaṅkara āgunē"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "tārā ētē prabēśa karabē bicārēra dinē"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "āra tārā ēra thēkē garahājira thākatē pārabē nā."
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Āra kisē tōmākē bujhatē dēbē kī sē'i bicārēra dina"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "punarāẏa kisē tōmākē bōjhānō yābē bicārēra dina ki"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "ē sē'idina yēdina kōnō sattbā kōnō ā‌tmāra jan'yē kōnō-kichu karāra sāmarthya rākhabē nā. Āra kartr̥tba sē'idina habē āllāh‌ra'i."
        }
    ]
}