{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "tumi paṛō tōmāra prabhura nāmē yini sr̥ṣṭi karēchēna"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "sr̥ṣṭi karēchēna mānuṣakē ēka raktapinḍa thēkē."
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Paṛō! Āra tōmāra prabhu mahāsam'mānita"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "yini śikṣā diẏēchēna kalamēra sāhāyyē"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "śikṣā diẏēchēna mānuṣakē yā sē jānatō'i nā."
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Bastutaḥ mānuṣa niścaẏa'i sīmālaṅghana karē'i thākē."
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kāraṇa sē nijēkē sbaẏansamr̥d'dha dēkhē."
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Niścaẏa tōmāra prabhura kāchē'i pratyābartana."
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Tumi ki tākē dēkhēcha yē bāraṇa karē"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "ēkajana bāndākē yakhana sē nāmāya paṛē"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "tumi ki lakṣya karēcha -- sē saṯpathē raẏēchē ki nā"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "athabā dharmabhīrutā abalanbanēra nirdēśa dēẏa kinā"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "tumi ki dēkhēcha -- sē mithyārōpa karachē ō phirē yācchē ki nā"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "sē ki jānē nā yē āllāh abaśya'i dēkhatē pācchēna"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Nā, yadi sē nā thāmē tabē āmarā niścaẏa ṭēnē dharaba kapālēra culēra gōchā"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "mithyācārī pāpācārī culēra gōchā"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "tāhalē sē ḍākuka tāra sāṅgōpāṅgadēra"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "āmarā'ō saṅgē saṅgē ḍākabō durdharṣa bāhinīkē."
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Nā, tumi tāra ājñā pālana karō nā, baraṁ tumi sijadā karō ēbaṁ nikaṭabartī ha'ō."
        }
    ]
}