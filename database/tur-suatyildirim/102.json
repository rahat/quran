{
    "chapter": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Dünyalıklarla böbürlenmek, oyaladı sizleri"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Tâ boylayıncaya kadar kabirleri"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır (geçici dünya zevklerine bağlanmak doğru değil, sakının bundan) ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Evet, evet! İleride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Sakının bundan! Eğer kesin bir tarzda (ilmelyakin) bilseydiniz böyle yapmazdınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Siz cehennemi göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Evet, evet onu mutlaka gözlerinizle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gün nimetlerden hesaba çekileceksiniz"
        }
    ]
}