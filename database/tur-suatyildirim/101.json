{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Kari'a"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o kari'a"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Kari'ayı, o kapıları döven ve dehşetiyle kalplere çarpan o kıyamet felaketini sen nereden bileceksin ki"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar uçuşan kelebekler gibi şuraya buraya fırlatılır"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar atılmış yüne döner"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Artık kimin tartıları ağır basarsa"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Memnun kalacağı bir hayata girer"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları da hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun barınağı da Haviye olur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Haviye bir ateştir: kızgın mı kızgın"
        }
    ]
}