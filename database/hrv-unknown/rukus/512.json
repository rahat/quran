{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Ne! Kunem se Danom kijameta"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "I ne! Kunem se dušom samooptužujućom"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Računa li čovjek da nećemo sastaviti kosti njegove"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Svakako! Kadri smo da uredimo jagodice njegove"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Naprotiv! Želi čovjek da griješi pred sobom"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Pita: “Kad će Dan kijameta?”"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Pa kad se ukoči pogled"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "I pomrači Mjesec"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "I spoji Sunce i Mjesec"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "Tog dana reći će čovjek: “Gdje je pribježište?”"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Nikako! Nema utočišta"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Gospodaru tvom je Tog dana stanište"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "Obavijestit će se čovjek Tog dana šta je unaprijed poslao i zapostavio"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Štaviše, čovjek će protiv duše svoje dokaz biti"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Makar davao opravdanja svoja"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ne pokreći njime jezik svoj, da bi ga ubrzao"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Uistinu, na Nama je sastavljanje njegovo i učenje njegovo"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Pa kad ga učimo, slijedi učenje njegovo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Zatim, uistinu na Nama je objašnjavanje njegovo"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Nikako! Naprotiv! Volite ubrzano"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "A ostavljate Ahiret"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Lica će Tog dana blistava biti"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Prema Gospodaru svome gledajući"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "I lica će Tog dana smrknuta biti"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Misliće da će im se nesreća učiniti"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Nikako! Kad dospije ključnjačama"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "I rečeno bude: “Ko je vrač?”"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "I on pomisli da je to rastanak"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "I savije potkoljenica uz potkoljenicu"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Gospodaru tvom Tog dana biće sprovođenje"
        }
    ]
}