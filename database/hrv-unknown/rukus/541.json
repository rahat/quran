{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Kad se zatrese Zemlja potresom svojim"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "I izbaci Zemlja terete svoje"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "I rekne čovjek: “Šta joj je?”"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Tog dana kazivat će vijesti svoje"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Jer će joj Gospodar tvoj objaviti"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "Tog dana pojaviće se ljudi odvojeni, da im se pokažu djela njihova"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Pa ko je uradio težinu atoma dobrog, vidjeće ga"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "A ko je uradio težinu atoma zla, vidjeće ga"
        }
    ]
}