{
    "pages": [
        {
            "chapter": 78,
            "verse": 31,
            "text": "Uistinu, bogobojazni će imati uspjeh"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bašče i vinograde"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "I jedrih grudi vršnjakinje"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "I čašu punu"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Neće čuti u njemu besmislicu, niti laganje"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Plaća od Gospodara tvog, dar obračunat"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Gospodara nebesa i Zemlje i šta je između njih, Milostivog. Neće vladati govorom od Njega"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Na Dan kad bude stajao Duh i meleci posafani, neće govoriti, izuzev onaj kome dopusti Milostivi - a govoriće tačno"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "To je dan istinit, pa ko hoće, uzeće ka Gospodaru svom povratište"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Uistinu, Mi vas upozoravamo kaznom bliskom, na Dan kad vidi čovjek šta su unaprijed poslale ruke njegove i rekne nevjernik: “O da sam prašina!”"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Tako mi onih koji čupaju žestoko"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "I onih koji vade (blagim) vađenjem"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "I onih koji plove klizeći"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Te onih koji prethode prethođenjem"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Te onih koji upravljaju stvar"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "Na Dan kad Tresući zatrese"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Slijediće ga naredno"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Srca će Tog dana uzdrhtala biti"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Pogledi njihovi biće oboreni"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Govore: “Hoćemo li mi uistinu u prvobitno stanje vraćeni biti"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Zar kad budemo kosti istruhle?”"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Govore: “To je onda povratak poguban.”"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Pa to će samo krik jedan biti"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Tad gle: oni budni"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Da li ti je došao hadis o Musau"
        }
    ]
}