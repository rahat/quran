{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Bogulmus olanları sokup alanlara andolsun"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Canları kolaylıkla alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıstıkca yarısanlara"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve isleri yonetenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun; bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ve pesinden bie baskası gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun kalbler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozler yere doner"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Biz, eski halimize mi dondurulecegiz? derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmıs kemikler oldugumuz vakit mi"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "O takdirde bu, zararlı bir donustur, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Dogrusu o, bir tek cıglıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Ki o zaman, hepsi topragın yuzune dokulecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi geldi mi sana"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbı ona; mukaddes vadide, Tuva´da soyle seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun´a git; cunku o, cok azmıstır"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: temizlenmeye meylin var mı senin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbına giden yolu gostereyim de O´ndan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ve ona en buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Ama o, yalanlayıp isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını dondu, kosmaya basladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ve sizin en yuce Rabbınız benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Bunu uzerine Allah, onu dunya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Suphesiz ki bunda, korkan kimseler icin ibret vardır"
        }
    ]
}