{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Andolsun yıldıza, battıgı demde"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "Arkadasınız sapmamıs ve azmamıstır"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "Kendiliginden konusmaz o"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "Bu; sadece vahy edilen bir vahiydir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Onu muthis kuvvetli olan ogretti"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "O; akıl ve gorusunde kamildir. Hemen dogruluverdi"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "Ve o; en yuce ufukta idi"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra yaklastı, derken sarkıverdi"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "Iki yay kadar yahut daha da yakın oldu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "O vakit kuluna vahyedecegini etti"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "Onun gordugunu gonul yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onun gordugu sey uzerinde de kendisiyle tartısacak mısınız"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Andolsun ki; onu, bir de diger iniste gormustu"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "Sidret´ul-Munteha´nın yanında"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "Ki Cennet´ul-Me´va da onun yanındadır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "O zaman Sidre´yi burumekte olan buruyordu"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Goz, ne sastı ne astı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Andolsun ki; Rabbının, ayetlerinden en buyugunu gordu"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gordunuz mu Lat ve Uzza´yı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Ucuncusu olan diger Menat´ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Demek erkekler sizin, disiler O´nun mu"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "Oyleyse bu, insafsız bir paylasma"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Bunlar, sizin ve atalarınızın taktıgı adlardan baska bir sey degildir. Allah onlara hic bir guc indirmemistir. Onlar kuruntudan ve nefislerin arzu ettigi hevadan baskasına uymuyorlar. Halbuki kendilerine Rabblarından hidayet gelmistir"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Yoksa, her umdugu sey insanın mıdır"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Ahiret de dunya da Allah´ındır"
        }
    ]
}