{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, sarsıldıkca sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yer, butun agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insan; buna ne oluyor? dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun; o, butun haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbın kendisine vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, yaptıklarının kendilerine gosterilmesi icin boluk boluk donerler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim, zerre mikdarı hayır islerse; onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre mikdarı ser islerse; onu gorur"
        }
    ]
}