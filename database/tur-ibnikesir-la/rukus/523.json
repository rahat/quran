{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes duruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar dokuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar ciftlestirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gomulen kız cocuguna soruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunahtan dolayı olduruldugu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sayfalar acıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok yerinden oynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıstırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kisi onceden ne hazırladıgını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Andolsun sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp akıp yuvalarına girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "kararmaya baslayan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Agarmaya baslayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Suphesiz ki bu; serefli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Ars´ın sahibi katında degerlidir ve gucludur"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendisine uyulandır, emindir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin arkadasınız asla deli degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki; onu, apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Gaybdan oturu o, asla suclu da degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu, kovulmus seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Boyleyken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O; ancak alemler icin bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dogru olmak isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbı olan Allah dilemedikce, sizler dileyemezsiniz"
        }
    ]
}