{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemisti, namaz da kılmamıstı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamıs, yuz cevirmisti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına kendinden yana olanlara gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan kendisinin basıbos bırakılacagını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı olmus; sonra, onu insan bicimine koyup yaratmıs ve duzeltmistir"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek, disi iki cins yaratmıstır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Simdi O; oluleri diriltmeye kadir degil midir"
        }
    ]
}