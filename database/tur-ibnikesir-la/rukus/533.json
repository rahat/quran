{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun gunese ve aydınlıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu acıga cıkardıgında gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Ortup burudugunde geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu duzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona, hem kotulugu hem de takvayı ilham edene"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu arıtan, gercekten felaha ermistir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve onu ortup kirleten ise muhakkak ziyana ugramıstır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlıgı yuzunden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri tıldıgında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın peygamberi onlara: Allah´ın devesi ve onun su hakkı, demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onu yalanladılar ve derken deveyi kestiler. Bunu uzerine gunahları sebebiyle Rabbları onları kırıp gecirerek yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bunun sonundan hic korkmayarak"
        }
    ]
}