{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi sorusturuyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Buyuk haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar, bunun uzerinde ihtilafa dusmektedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır; ilerde, bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır; ilerde, bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryuzunu bir besik yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu kıldık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu de maiset vakti kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuzde yedi saglamı bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Pırıl pırıl parlayan bir kandil astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkıstırılmlslardan da sarıl sarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ki onunla taneler ve bitkiler cıkaralım"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve sarmas dolas bahceler yetirelim"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dogrusu, hukum gunu; ta´yin edilmis bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a ufuruldugu gun, hepiniz boluk boluk gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gok acılmıs, kapı kapı olmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulmus, serab olmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Suphesiz ki cehennem; bir gozetleme yeridir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlar icin varılacak bir yer"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Sonsuz devirler boyunca orada kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada serinlik ve icecekler tadamayacaklardır"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Sade kaynar bir su ve bir de irinden baska"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Islediklerine uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar hic bir hesab beklemezlerdi"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve ayetlerimizi yalan sayıp dururlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Oysa Biz, her seyi yazıp saymıstık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Oyleyse tadınız, bundan boyle size azabdan baska bir sey artırmayız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Suphesiz ki muttakiler icin kurtulus vardır"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bahceler ve baglar"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Gogusleri tomurcuklanmıs yasıt kızlar"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Ve dolu kaseler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada yalan ve bos soz isitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Rabbından bir mukafat ve bagıs olarak"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Goklerin, yerin ve ikisi arasında bulunanların Rabbı Rahman´dan. O´na hitabda bulunmaya kimse muktadir olamaz"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "O gun; ruh ve melekler, saf halinde duracaklardır. Rahman´ın izin verdiklerinden baskaları konusamazlar. O da dogruyu soyler"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Iste bu; hak gundur. Dileyen Rabbına dogru bir yol edinir"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azabla uyardık. O gun; kisi elleriyle sunduguna bakacak. Ve kafir: Keski ben, toprak olsaydım, diyecektir"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Bogulmus olanları sokup alanlara andolsun"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Canları kolaylıkla alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıstıkca yarısanlara"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve isleri yonetenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun; bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ve pesinden bie baskası gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun kalbler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozler yere doner"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Biz, eski halimize mi dondurulecegiz? derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmıs kemikler oldugumuz vakit mi"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "O takdirde bu, zararlı bir donustur, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Dogrusu o, bir tek cıglıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Ki o zaman, hepsi topragın yuzune dokulecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi geldi mi sana"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbı ona; mukaddes vadide, Tuva´da soyle seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun´a git; cunku o, cok azmıstır"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: temizlenmeye meylin var mı senin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbına giden yolu gostereyim de O´ndan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ve ona en buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Ama o, yalanlayıp isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını dondu, kosmaya basladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ve sizin en yuce Rabbınız benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Bunu uzerine Allah, onu dunya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Suphesiz ki bunda, korkan kimseler icin ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha zordur, yoksa gogu mu? Onu bina etmistir"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Boynu yukseltmis ve ona bir sekil vermistir"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karanlık yapmıs, gunduzunu ortaya cıkarmıstır"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra yeri dosemistir"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagını cıkarmıstır"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dagları dikmistir"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın gecinmesi icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Fakat o en buyuk bela geldigi zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gun insan, neye calıstıgını anlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cehennem, bakan herkese apacık gosterilir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim haddini asmıssa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve kim dunya hayatını tercih etmisse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Suphesiz ki onun varacagı yer; cehennemdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kim de Rabbının makamından korkup da nefsini heveslerden alıkoyduysa"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Suphesiz ki onun varacagı yer, cennettir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyametin ne zaman gelip catacagını soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Senin neyine onun zamanını bildirmek"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "En sonunda o, ancak Rabbına aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen, ancak O´ndan korkanı uyaransın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Ve onlar onu gordukleri gun; sadece bir aksam veya bir kusluk vakti kalmıs gibi olurlar"
        }
    ]
}