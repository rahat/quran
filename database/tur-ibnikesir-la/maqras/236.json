{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve Rabbına boyun egdiginde. Ki o, zaten boyun egecektir"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer duzeltildigi zaman"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icinde olanları dısarı atıp bosaldıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbına boyun egdiginde. Ki o, zaten boyun egecektir"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan; sen Rabbın icin calısıp cabaladın, nihayet O´na kavusacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolayca bir hesab ile muhasebe edilecektir"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve ailesine de sevincli olarak donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Derhal helakini temenni edecektir"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve cılgın aleve girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, ailesi icinde iken sımarıktı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, hic donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; muhakkak Rabbı, onu gormekteydi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "And ederim o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve derleyip topladıgı seye"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ve toplu halde geldiginde aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Muhakkak siz; bir durumdan digerine ugratılacaksınız"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Oyleyse, ne oluyor onlara da inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Ve Kur´an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Bilakis o kufredenler, yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah, onların sakındıklarını en iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara elim bir azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip salih amel isleyenler mustesna. Onlara bitip tukenmeyen bir ecir vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Andolsun; burclar dolu semaya"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Ve vaadolunan gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sehadet edene ve sehadet edilene"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Uhdud ashabının canı cıksın"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Tutusturucu ateslerle"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani onlar, onun cevresinde oturmuslardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Mu´minlere yaptıklarını seyretmekteydiler"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlar; ancak Aziz, Hamid Allah´a inandıkları icin mu´minlerden oc almıslardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O ki; goklerin ve yerin mulku kendisinindir. Ve Allah; her seye Sahid´dir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Suphesiz ki mu´min erkekleri ve mu´min kadınları belaya ugratanlar sonra da tevbe etmemis olanlar, iste onlar icin cehennem azabı vardır. Ve yakıcı azab da onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Dogrusu iman edip salih amel islemis olanlar icin, altlarından ırmaklar akan cennetler vardır. Iste buyuk kurtulus budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Dogrusu Rabbının yakalayısı amansızdır"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Once yaratıp sonra tekrarlayan O´dur, O"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O; Gafur´dur, Vedud´dur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars´ın sahibidir, Mecid´dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigini mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların haberi haberi, sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud´un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Dogrusu kufredenler, yalanlamadadırlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise onları arkadan kusatandır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Dogrusu o; sanlı bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun goge ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Nereden bileceksin sen Tarık´ın ne oldugunu"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hic bir nefis yoktur ki mutlaka onun uzerinde bir gozeten bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Su halde insan bir baksın, neden yaratılmıstır"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "O, atılıp dokulen bir sudan yaratılmıstır"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel kemigi ile goguslerin arasından cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Suphe yok ki O, onu yeniden dondurmeye kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gun, sırlar yoklanıp meydana cıkarılacaktır"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun gucu de, yardımcısı da yoktur"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o donus yeri olan goge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Ve yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Ki dogrusu bu, kesin bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Ve o, bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Gercekten onlar duzen kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir duzen kurmaktayım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen; simdilik kafirlere muhlet ver, onları biraz geciktir"
        }
    ]
}