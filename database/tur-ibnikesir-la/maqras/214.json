{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun vukuunu hic bir yalanlayıcı yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alcaltıcı, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer; sarsıldıkca sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar, ufalandıkca ufalandıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagılmıs toz haline geldigi zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Siz uc sınıf olmussunuzdur"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagcılar; o sagcılar ne mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solcular; o solcular ne bahtsızdırlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Onde olanlar da oncudurler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlar en cok gozde olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Murassa tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı olarak uzerinde yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Olumsuz civanlar etraflarında dolasırlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Main´den buyuk kaplarla, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan bas agrısına ugratılmayacakları gibi, akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begenecekleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Kus eti, iclerinin cektiginden"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Sahin gozlu huriler de"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inci misali"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmakta olduklarına karsılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos bir laf, ne de gunaha sokacak birsey isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnız selama karsılık; selam, denir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagcılar; ne bahtiyardır o sagcılar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz kiraz"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmıs muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmıs golge"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan su"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir cok meyve"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yukseltilmis dosekler ustundedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gercekten Biz; onları, yeni bir yaratılısla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Ve onları el degmemisler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine duskun hep bir yasıtlar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sagcılar icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir cogu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solcular da. Solcular kimlerdir"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Kızgın ateste, kaynar sulardadırlar"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Ve kapkara dumandan bir golge icindedirler"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serindir, ne de hostur"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar; bundan once refahla sımarmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Ve buyuk gunah islemekte direnip dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve derlerdi ki: Oldugumuzde, toprak ve kemik yıgını oldugumuzda mı, gercekten biz mi yeniden diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Once gelmis gecmis atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Suphesiz hem oncekiler, hem sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir gunun belli bir vaktinde mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra gercekten siz ey sapıklar, yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Muhakkak ki yiyeceksiniz zakkum agacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune de iceceksiniz o kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamıs develerin suya saldırısı gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Iste ceza gunu onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi; Biz, yarattık. Hala tasdik etmez misiniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Soyleyin oyleyse; dokmekte oldugunuz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz, yoksa yaratanlar Biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Biz, takdir ettik aranızda olumu. Ve Biz, onune gecilecekler de degiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Yerinize benzerlerinizi getirmekte ve sizi bilemeyeceginiz bir yaratılısla tekrar var etmekte"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun ki; ilk yaratılısınızı bildiniz. Iyice dusunmeli degil misiniz"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Simdi Bana; ekmekte oldugunuzu haber verin"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu, siz mi bitiriyorsunuz, yoksa Biz miyiz, bitirenler"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek Biz, onu corcop yaparız da sasar kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Dogrusu borc altına girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha dogrusu biz mahrumlarız"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Soyleyin Bana simdi, icmekte oldugunuz suyu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz, yoksa Biz miyiz indirenler"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Isteseydik onu tuzlu bir su kılardık. Oyleyse sukretmeli degil misiniz"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Soyleyin bana, simdi cakmakta oldugunuz atesi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yarattınız, yoksa Biz miyiz yaratanlar"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz, onu bir ibret ve konaklayanlar icin faydalı kıldık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse Rabbını o buyuk adıyla tesbih et"
        }
    ]
}