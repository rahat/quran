{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbının o cok yuce adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki O, yaratıp sekil vermistir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ki O, takdir edip dogru yolu gostermistir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ki O, yesilligi cıkarmıstır"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir cope cevirmistir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacagız da hic unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın diledigi baska. Cunku O, acıgı da, gizli olanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni kolay olana muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde ogut fayda verecekse, ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkacak olan ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ise ondan kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en buyuk atese girecek olandır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O, orada ne olecek, ne de dirilecektir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu arınan, felah bulmustur"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbının adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz, dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Halbuki ahiret, daha hayırlı ve daha bakidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz ki bu, ilk sahifelerdedir"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Her seyi sarıp kaplayacak olanın haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler vardır ki, o gun zillete burunmustur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor isler altında bitkin dusmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan icirilecektirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Kotu kokulu, kuru bir dikenden baska yiyecekleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O, ne semirtir, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de vardır ki; o gun, parıl parıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Calıstıklarından hosnuddur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos bir laf isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Yerlestirilmis kaseler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis sacaklı halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Onlar deveye bakmazlar mı, nasıl yaratılmıstır"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge de. Nasıl yukseltilmistir"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara da. Nasıl dikilmistir"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere de. Nasıl yayılmıstır"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ogut ver, cunku sen; ancak bir ogutcusun"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerine zor kullanıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve kufrederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en buyuk azab ile azablandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusu, ancak Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra hesablarını gormek de muhakkak Bize duser"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun fecre"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "Ve on geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Hem cifte, hem teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gelip gececegi demde geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Akıl sahipleri icin bunların her biri birer yemine degmez mi"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Gormez misin, Rabbın nasıl yaptı Ad´a"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sutunlar sahibi Irem´e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki o, sehirlerde bir benzeri yaratılmayandı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Dag yamacında kayaları oyan Semud kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Kazıklar sahibi Firavun´a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Ki bunlar, memleketlerde azgınlık etmislerdi"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Ve fesadı cogaltmıslardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu sebeple Rabbın onları, azab kırbacından gecirdi"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Dogrusu Rabbın hep gozetlemekteydi"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Ama insan; Rabbı kendisini deneyip kerem eder ve nimet verirse: Rabbım beni serefli kıldı, der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama onu denemek uzere rızkını daraltırsa: Rabbım beni fakir dusurdu, der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır; dogrusu siz, yetime ikram etmezsiniz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmek icin birbirinizi tesvik etmezsiniz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası hak gozetmeden yersiniz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı da pek cok seversiniz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ama yer; parca parca dagıtıldıgında"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizilip Rabbının buyrugu geldiginde"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Cehennem o gun getirilir. Insan o gun, hatırlayacak ama hatırlamadan ona ne"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Keske bu hayatım icin onceden bir sey yapsaydım, der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gun O´nun azabı gibi hic bir kimse azab edemez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O´nun vurdugu bagı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzur icinde olan can"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Don Rabbına. Sen O´ndan hosnud, O da senden razı olarak"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Haydi gir kullarımın arasına"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Gir, cennetime"
        }
    ]
}