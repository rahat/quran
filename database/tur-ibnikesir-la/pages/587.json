    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler kaynastıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına getirildigi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Kisi neyi takdim edip neyi te´hir ettigini bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan; keremi bol Rabbına karsı seni ne aldattı"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki; seni yaratmıs, sana sekil vermis ve duzeltmistir"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni istedigi sekilde terkib etmistir"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır; bilakis siz, dini yalan sayıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki sizin uzerinizde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Cok serefli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ne yaptıgınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Suphesiz ki iyiler; Cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ve suphesiz ki, kotuler de alevli atestedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gunu oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ve orada kaybolacak degildirler"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Yine sen nereden bileceksin, din gununun ne oldugunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O, oyle bir gundur ki; kimse kimseye hicbir seyle fayda saglamaz. Ve o gun, emir Allah´ındır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Olcude ve tartıda hile yapanların vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Onlar ki; insanlardan bir sey aldıkları zaman kendileri olcerek tam alırlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Ama onlara bir sey olcup tartarak verdikleri zaman, eksik tutarlar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, kendilerinin diriltileceklerini sanmıyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gun icin"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Ki insanlar o gun, alemlerin Rabbının huzurunda duracaklar"
        }
    ]
}