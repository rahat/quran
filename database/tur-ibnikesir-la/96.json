{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbının adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O; insanı pıhtılasmıs kandan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbın nihayetsiz kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Ki O, kalemle ogretti"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini ogretmistir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır; insan azgınlık eder"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini mustagni gordugu icin"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Donus, suphesiz ancak Rabbınadır"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "O yasaklayanı gordun mu"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Bir kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gordun mu; ya o kul dogru yolda ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya takvayı emrettiyse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu; ya yalan saydı ve yuz cevirdi ise"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki; Allah gercekten gormektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Ama bundan vazgecmezse; andolsun ki; onu alnından tutup surukleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, gunahkar alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Oyleyse toplulugunu cagırsın dursun"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri cagırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Sakın, sen ona uyma. Secde et ve yaklas"
        }
    ]
}