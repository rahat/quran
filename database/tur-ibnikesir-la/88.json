{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Her seyi sarıp kaplayacak olanın haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler vardır ki, o gun zillete burunmustur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor isler altında bitkin dusmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan icirilecektirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Kotu kokulu, kuru bir dikenden baska yiyecekleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O, ne semirtir, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de vardır ki; o gun, parıl parıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Calıstıklarından hosnuddur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos bir laf isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Yerlestirilmis kaseler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis sacaklı halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Onlar deveye bakmazlar mı, nasıl yaratılmıstır"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge de. Nasıl yukseltilmistir"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara da. Nasıl dikilmistir"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere de. Nasıl yayılmıstır"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ogut ver, cunku sen; ancak bir ogutcusun"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerine zor kullanıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve kufrederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en buyuk azab ile azablandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusu, ancak Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra hesablarını gormek de muhakkak Bize duser"
        }
    ]
}