{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "¿Acaso has observado a quien desmiente el Dia del Juicio"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Es quien rechaza al huerfano"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "y no exhorta a alimentar al pobre"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "¡Ay de los orantes"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "que son negligentes en sus oraciones [realizandolas fuera de su horario]"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "y solo las realizan para hacerse ver"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "y se niegan a prestar hasta la minima ayuda"
        }
    ]
}