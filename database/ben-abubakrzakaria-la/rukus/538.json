{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "paruna apanara rabera name, yini srsti karechena [1] –"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "srsti karechena manusake ‘alaka’ hate"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Paruna, ara apanara raba mahamahimanbita"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "yini kalamera sahayye siksa diyechena [1] –"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "siksa diyechena manusake ya se janata na"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Bastabe'i [1], manusa simalanghana'i kare thake"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "karana se nijake amukhapeksi mane kare"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Niscaya apanara rabera kache'i phire ya'oya"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Amake jana'o (ebam ascarya ha'o) tara samparke, ye badha deya"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "eka bandake [1]- yakhana tini salata adaya karena"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Amake bala! Yadi tini hidayatera upara thakena"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "athaba takoyara nirdesa dena; (tarapara'o se kibhabe badha deya)"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "amake bala! Yadi se (nisedhakari) mithyaropa kare ebam mukha phiriye neya"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "se ki jane na ye, niscaya allah dekhena"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "kakhano naya, se yadi birata na haya tabe amara take abasya'i hemcare niye yaba, mathara samanera culera guccha dhare"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "mithyacari, papistha sam'mukha-culera-guccha"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Ata'eba se tara parisadake deke anuka"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "sighra'i amara deke anaba yabaniyaderake"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Kakhano naya! Apani tara anusarana karabena na. Ara apani sajda karuna ebam nikatabarti hona"
        }
    ]
}