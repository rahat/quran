{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Apani apanara sumahana rabera namera pabitrata o mahima ghosana karuna"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "yini [1] srsti karena [2] atahpara suthama karena"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ara yini nirdharana karena [1] atahpara pathanirdesa karena"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "ara yini trnadi utpanna karena"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "pare ta dhusara abarjanaya parinata karena"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sighra'i amara apanake patha karaba, phale apani bhulabena na"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allah ya icche karena ta chara [1]. Niscaya tini janena ya prakasya o ya gopaniya"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ara amara apanara jan'ya sugama kare deba sahaja patha"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Atahpara upadesa yadi phalaprasu haya tabe upadesa dina"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "ye bhaya kare se'i upadesa grahana karabe"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ara ta upeksa karabe ye nitanta hatabhagya"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "ye bhayabaha agune dagdha habe"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "tarapara sekhane se marabe'o na bamcabe'o na"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Abasya'i saphalya labha karabe ye parisud'dha haya"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ebam tara rabera nama smarana kare o salata kayema kare"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Kintu tomara duniyara jibanake pradhan'ya da'o"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "athaca akhirata'i utkrsta [1] o sthayi"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Niscaya eta ache purbabarti sahiphasamuhe"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ibrahima o musara sahiphasamuhe"
        }
    ]
}