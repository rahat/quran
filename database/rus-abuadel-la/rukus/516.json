{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Pe trimisele neincetat"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Pe vantoasele aprige la suflat"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Pe solii iute raspanditori"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Pe despartitorii osanditori"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Pe ai amintirii aducatori"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "— intru dezvinuire ori intru predicare —"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Cu ce sunteti amenintati va veni neaparat"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "cand stelele vor fi sterse"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "cand cerul va fi despicat"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "cand muntii vor fi in tandari aruncati"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "cand trimisilor un ragaz le va fi dat"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Pentru ce zi au fost sorocite, oare"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Pentru Ziua Cumpenei"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Cum vei sti tu oare ce este Ziua Cumpenei"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Nu i-am nimicit pe oamenii dintai"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Nu ii facem pe cei de apoi sa le urmeze"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Asa vom face cu toti nelegiuitii"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Nu v-am creat Noi din apa lepadata"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "pe care am pus-o intr-un vas trainic"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "pana la un soroc stiut"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Noi am sortit asa! Ferice de cei sortitori"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "N-am facut Noi pamantul loc de adunare"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "pentru vii si pentru morti"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Nu am inaltat Noi muntii semeti? Si v-am dat sa beti apa dulce"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Duceti-va la ceea ce-ati hulit"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Duceti-va catre umbra in trei ramuri impartita"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "care nici nu umbreste si nici de flacara nu scuteste"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Ea imprastie scantei cat palatul"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "asemenea unor galbene camile"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "In Ziua aceea, ei nu vor putea vorbi"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "si nu li se va ingadui sa se dezvinovateasca"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "In Ziua aceea, vai celor care hulesc"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Aceasta va fi Ziua Cumpenei cand va vom strange pe voi laolalta cu cei dintai"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Daca aveti vreun viclesug, vicleniti asupra Mea"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "In Ziua aceea, vai celor care hulesc"
        }
    ]
}