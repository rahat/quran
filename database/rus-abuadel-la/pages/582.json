{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Despre ce se intreaba unii pe altii"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Despre Vestea cea Mare"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "asupra careia se cearta"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ba nu!... Curand ei vor avea stire"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Si iarasi, curand ei vor avea stire"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Nu am facut Noi pamantul leagan"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "iar muntii tarusi"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Noi v-am creat pe voi cu pereche"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Si v-am facut voua somnul odihna"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Noi am facut noaptea vesmant"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "si am facut ziua pentru trai"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Am zidit deasupra voastra sapte tarii"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Am facut o candela dogoritoare"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Si din nori am trimis apa suvoi"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ca sa dea la iveala grane si ierburi"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "si gradini imbelsugate"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Da, Ziua Cumpenei este hotarata"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "In Ziua cand se va sufla in trambita, veti veni in cete"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Cerul se va deschide si vor fi numai porti"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Muntii se vor pune in miscare si vor fi numai naluciri"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Gheena ce sta la panda"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "va fi liman ticalosilor"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "care vor zacea acolo veacuri de-a randul"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "fara sa guste racoare ori bautura"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "ci numai apa clocotita si bautura imputita"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "caci aceasta le va fi rasplata cuvenita"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Ei nu asteptau nici o Judecata"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "caci socoteau semnele Noastre minciuni"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Noi am tinut insa socoteala la tot intr-o carte"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Gustati, asadar! Noi voua nu va vom mari decat osanda"
        }
    ]
}