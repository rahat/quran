{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Cand soarele se va chirci"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "cand stelele vor cadea"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "cand muntii vor fi pusi in miscare"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "cand camilele in zece luni lasate in uitare"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "cand fiarele vor fi adunate"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "cand marile se vor revarsa"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "cand sufletele vor fi imperecheate"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "cand copila de vie ingropata va fi intrebata"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "pentru care pacat a fost omorata"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "cand sulurile vor fi imprastiate"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "cand cerul va fi dat la o parte"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "cand Iadul va fi incins"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "cand Raiul va fi aproape"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "atunci fiece suflet va sti ceea ce a adus"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Ba nu! Jur pe planetele"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ce aluneca si trec"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Pe noapte cand se intuneca"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Pe zori cand lin adie"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Acesta este cuvantul unui prea-cinstit trimis"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "cu putere de la Stapanul Tronului Nezdruncinat"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "supus si credincios"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Prietenul vostru nu este indracit"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "El l-a vazut in zare deslusit"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "si El cu Taina nu este zgarcit"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Acesta nu este cuvantul unui diavol la pietre luat"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Unde plecati"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Aceasta este doar o amintire pentru lumi"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "pentru aceia dintre voi care vor sa calce drept"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Voi nu voiti insa decat ceea ce Dumnezeu, Stapanul lumilor, voieste"
        }
    ]
}