{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Madhëroje emrin e Zotin tënd të Lartë"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "I cili krijoi dhe përsosi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Dhe i cili përcaktoi e orientoi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Dhe i cili mundësoi mbirjen e kullosës"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "E pastaj atë e bëri mbeturinë të zezë"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ne do të lexojmë ty e nuk do të harrosh (Kur’anin)"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Përveç asaj që All-llahu dëshiron. Ai e di të haptën e të fshehtën"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Dhe Ne do ta lehtësojmë ty më të lehtën"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Pra këshillo aty ku këshilla bën dobi"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Do të këshillohet ai që ka frikë"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ndërsa do të shmanget më i keqi"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "I cili do të hyjë në zjarrin e madh"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Pastaj nuk do të vdesë në të, por as nuk do të jetojë"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ka shpëtuar ai që është patruar"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Që e përkujton emrin e Zotit të vet dhe falet"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Po ju i jepni përparësi jetës së dunjasë"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ndërsa ahireti (amshimi) është më i mirë dhe e përjetshëm"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Vërtet kjo ishte në broshurat e lashta"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "në broshurat e Ibrahimit dhe të Musait"
        }
    ]
}