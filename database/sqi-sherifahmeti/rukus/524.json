{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "E kur të çahet qielli"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Dhe kur të shkapërderdhen yjet"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Dhe kur të përzihen detet"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Dhe kur të trazohen varret"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Atëbotë secili njeri e din se çka punuar dhe çka ka lënë prapa"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O ti njeri po ç’të mashtroi ty kundrejt Zotit tënd që është bujar e i urtë"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "I cili të krijoi, të përsosi dhe të drejtoi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Të formësoi në formën që Ai dëshiroi"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Jo, nuk është ashtu. Ju përgënjeshtroni ditën e përgjegjësisë"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Kurse ndaj jush janë përcjellësit"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Janë shkrues të ndershëm te All-llahu"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ata e dinë se çka punoni"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "E s’ka dyshim se të mirët janë në kënaqësinë e përjetimeve (në Xhennet)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Dhe se mëkatarët janë në Xhehennem"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Aty futen ata ditën e gjykimit (të cilën nuk e besonin)"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Dhe nuk kanë të larguar prej tij"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "E ç’të mësoi ty se ç’është dita e gjykimit"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Përsëri, ç’të mësoi ty se ç’është dita e gjykimit"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Është dita kur askush, askujt nuk do të mund t’i ndihmojë asgjë; atë ditë e tërë çështja i takon vetëm All-llahut"
        }
    ]
}