{
    "rukus": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök çatladığı zaman"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve doğal yapısı gereğince Rabbine kulak verdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz edildiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçindekileri atıp boşalttığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve doğal yapısı gereğince Rabbine kulak verdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, Rabbine doğru çalışıp çabalarsın ve sonunda O'nunla karşılaşırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kitabı sağ taraftan verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve arkadaşlarına sevinç içinde dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Yok olmayı arzulayacak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve bir ateşte yanacaktır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Oysa arkadaşları arasında sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Bir daha (Rabbine) dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Doğrusu, Rabbi onu görmektedir"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Andolsun akşamın kızıllığına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Gecenin topladığına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz evreden evreye binip geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Peki onlar neden inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlara Kuran okunduğunda neden kabul etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, inkarcılar yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "ALLAH onların sakladıklarını çok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onları acı bir azapla müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İnanıp erdemli davrananlara ise kesilmez bir ödül var"
        }
    ]
}