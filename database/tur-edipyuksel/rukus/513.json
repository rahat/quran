{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "O ne doğruladı, ne de destekledi"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanladı ve yüz çevirdi"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra çalım satarak ailesine gitti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Sen bunu haketmişsin"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Gerçekten sen bunu haketmiş bulunuyorsun"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan, başıboş bırakılacağını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Dökülen meniden bir sperm değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Ve bir embriyoya dönüştükten sonra O yaratıp biçim verdi"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek ve dişi olmak üzere iki çift yarattı"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunları yapanın ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}