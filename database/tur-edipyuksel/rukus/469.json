{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kaçınılmaz olay gerçekleştiği zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerçekleşmesini artık yalanlayan çıkmaz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alçaltıcıdır, yücelticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yerin sallanıp sarsılacağı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve dağların paramparça edileceği zaman"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Artık o toz duman haline gelmiştir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler de üç bölüme ayrılırsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Mutlular ne kadar da mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Mutsuzlar ne kadar da mutsuzdurlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Bir de ileri geçen öncü elitler vardır"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar (Tanrı'ya) yaklaştırılanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerinde (bahçelerinde)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların büyük bir kısmı önceki nesillerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Küçük bir kısmı da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Lüks mobilyalar üzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı yaslanmışlardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onlara ölümsüz gençler servis yaparlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynaktan doldurulmuş bardaklar, sürahiler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne ara verirler ne de yorulurlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Güzel eşler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Korunmuş inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmış olduklarına bir karşılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bir saçmalık, ne de günaha sokan bir söz işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece, \"Selam, selam,\" derler"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağ tarafta olanlar sağ tarafta olacaklar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz meyve ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmış muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fışkıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bol meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bunlar ne tükenirler, ne de yasak edilirler"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve onlar yükseltilmiş mobilyalar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden biçimlendirdik"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, gençleştirdik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Mükemmel biçimde eşlenmişlerdir"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ tarafta olanlar içindir"
        }
    ]
}