{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Elbette, zakkum ağacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Günahkarın yiyeceğidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Derişik asit gibi ve midelerde kaynayacaktır"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Sıcak suyun kaynaması gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu yakalayın ve cehennemin ortasına sürükleyin"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra başına kaynar su azabından dökün"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tad bakalım; sen çok üstün ve şerefliydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Bu, işte kuşkulanıp durduğunuz şeydir"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Erdemli olanlar ise güvenlikli bir makamdadırlar"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Bahçeler ve pınarlar içerisinde"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "İpek ve atlastan giysiler içinde karşılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Bu böyledir; onlara güzel eşler vermişizdir"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Tam bir güvenlik içinde her meyveyi isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Orada, ilk ölümden başka ölüm tatmazlar. Onları cehennem azabından korumuştur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinin bir lütfu olarak. İşte büyük zafer budur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Öğüt alsınlar diye senin dilinle onu kolaylaştırdık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Öyleyse bekle; onlar da beklemektedirler"
        }
    ]
}