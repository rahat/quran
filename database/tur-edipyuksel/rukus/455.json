{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Esip savuranlara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Yük yüklenenlere"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp gidenlere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Ve işi bölümlere ayıranlara andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size söz verilen kuşkusuz bir gerçektir"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Yargılama kesinlikle gerçekleşecektir"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Mükemmel çizilmiş yörüngelere sahip göğe andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Siz ihtilaf içindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Çevrilen, ondan çevrilir"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Kahrolsun palavracılar"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Ki şaşkınlıkları içinde umursamıyorlar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yargı Gününün zamanını sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gün onlar ateşe sunulacaklardır"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Cezanızı tadın, meydan okumakta olduğunuz şey budur işte"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Erdemliler cennetlerdedir, pınar başlarındadır"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rab'lerinin kendilerine verdiğini alırlar. Çünkü onlar bundan önce güzel davranıyorlardı"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri az uyurlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seher vakitlerinde bağışlanma dilerlerdi"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Paralarında, isteyenler ve yoksullar için bir pay vardı"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Kesin inananlar için yerde ayetler (işaret ve deliller) vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi içinizde de... Görmez misiniz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gökte rızkınız ve size söz verilenler vardır"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Göğün ve yerin Rabbine andolsun ki sizin konuşmanız nasıl bir gerçek ise, bu da öylece bir gerçektir"
        }
    ]
}