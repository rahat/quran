{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun ard arda gönderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydıkça yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ayırdıkça ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Mesajı verenlere"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Bir müjde veya uyarı olarak"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size söz verilenler kesinlikle gerçekleşecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar söndürüldüğü"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Göğün yarıldığı"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Dağların ufalanıp savrulduğu"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Ve elçilere randevu verildiği zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Belirlenen gün için"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Yani Karar Günü için"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "O nasıl bir yargılama günüdür bilir misin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Öncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra, diğerlerini de onlara katmadık mı"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Suçlulara işte böyle davranırız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi değersiz bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Ve sonra onu iyi korunan bir yere yerleştirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Biz ölçtük, biçtik. Biz en iyi biçim verenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryüzünü bir toplanma yeri yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Yaşayanlar için, ölüler için"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Üzerine yüksek dağlar yerleştirip size tatlı su içirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yalanlamakta olduğunuz şeye doğru yürüyün"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Yürüyün, (cehennem alevinin) üç kollu gölgesine doğru"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "O ne gölgelendirir ne de alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Kıvılcımlar saçar, saraylar gibi"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "(Rengi de) Sarı deve gibi"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konuşamıyacağı bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ve özür dilemeleri için onlara izin de verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, Karar Günüdür. Sizi ve öncekileri toplamışızdır"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir planınız varsa bana karşı onu uygulayın"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Yalanlayanların vay haline o gün"
        }
    ]
}