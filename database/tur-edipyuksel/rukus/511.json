{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, andolsun Ay'a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Geçtiği vakit geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ağardığı vakit sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Bu büyüklerden birisidir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Halklara bir uyarıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "İlerlemek yahut geride kalmak dileyenleriniz için"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her kişi kendi günahıyla mahkum olur"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sağ tarafta olanlar hariç"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetler içindedirler, sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suçlulara"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi bu cezaya sokan nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Diyecekler ki, \"Desteklemezdik/namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Biz, boş şeylere dalanlarla birlikte dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Yargı gününü yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet (şimdi) kesin gerçeğe ulaştık"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Aracıların şefaati onlara bir yarar sağlamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Öyleyse neden bu mesajdan yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Ürkmüş zebralar gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan kaçan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her biri, kendisine özel olarak açılmış sayfalar verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Doğrusu, onlar ahiretten korkmuyor"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Doğrusu, bu bir öğüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan öğüt alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "ALLAH dilemezse onlar öğüt alamazlar. O, erdemli davranmanın kaynağıdır; bağışlamanın kaynağıdır"
        }
    ]
}