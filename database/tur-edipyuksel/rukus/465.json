{
    "rukus": [
        {
            "chapter": 54,
            "verse": 41,
            "text": "Firavun'un erkanına da uyarıcılar gitmişti"
        },
        {
            "chapter": 54,
            "verse": 42,
            "text": "Tüm mucizelerimizi yalanladılar ve biz de onları En üstün ve her şeye gücü yetenin yakalayışı gibi yakaladık"
        },
        {
            "chapter": 54,
            "verse": 43,
            "text": "Sizin inkarcılarınız onlarınkinden daha mı iyi? Yoksa kitaplarda kendiniz için bir af ilanına mı rastladınız"
        },
        {
            "chapter": 54,
            "verse": 44,
            "text": "Yoksa, \"Biz, zafere ulaşacak bir cemaatiz\" mi diyorlar"
        },
        {
            "chapter": 54,
            "verse": 45,
            "text": "O cemaat bozguna uğratılacak; dönüp kaçacaklar"
        },
        {
            "chapter": 54,
            "verse": 46,
            "text": "Saat onları beklemektedir, daha korkunç ve acıdır"
        },
        {
            "chapter": 54,
            "verse": 47,
            "text": "Suçlular bir sapıklık ve cehennem içindedir"
        },
        {
            "chapter": 54,
            "verse": 48,
            "text": "Yüzükoyun ateşe sürüklenecekleri gün: \"Cehennemin dokunuşunu tadın"
        },
        {
            "chapter": 54,
            "verse": 49,
            "text": "Biz her şeyi belli bir ölçüyle yaratmışızdır"
        },
        {
            "chapter": 54,
            "verse": 50,
            "text": "Buyruğumuz göz kırpması gibi anidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Sizin benzerlerinizi yok etmiştik. Yok mu öğüt alan"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Tüm yaptıkları kitaplarda kayıtlıdır"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Küçük ve büyük hepsi yazılmıştır"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Erdemliler, cennetler (bahçeler) ve ırmaklar içindedir"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Güçlü Kralın yanında onurlu makamlardadırlar"
        }
    ]
}