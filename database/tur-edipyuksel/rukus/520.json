{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun söküp çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Rahatça çekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp akanlara"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarışıp birbirlerini geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve böylece emirleri uygulayanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün o sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir diğeri izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün yürekler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri ise alçalır"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki, \"Daha önceki halimize mi döndürüldük"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz çürümüş kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyleyse bu zararına bir dönüştür,\" derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O bir tek dürtüşten ibarettir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Onlar uyanıvermişlerdir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Sana Musa'nın tarihi ulaştı mı"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Rabbi, kutsal Tuva vadisinde ona seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun'a git; o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: Arınmayacak mısın"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbine ileteyim de saygılı olasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve karşı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra, sırtını döndü, (aleyhte) çaba gösterdi"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp, ilan etti"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben sizin en yüce rabbinizim,\" dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Sonunda, ALLAH onu ahiret ve dünya cezasına çarptı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Kuşkusuz, saygı duyanlar için bunda bir ibret vardır"
        }
    ]
}