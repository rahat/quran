{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Düşerken yıldızlara andolsun"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "Arkadaşınız (Muhammed) ne sapmıştır, ne de azmıştır"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "Ne de kendi kişisel arzusundan konuşmaktadır"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "O (Kuran) ancak ve ancak bildilen bir vahiydir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Onu, büyük güce sahip olan öğretmiştir"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "Üstün otoritenin sahibi göründü"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "En yüksek ufukta"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra inip yaklaştı"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "Mesafe iki yay kadar veya daha yakın oldu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "Ve sonra kuluna ne bildirilecekse onu vahyetti"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "Gördüğünü gönlü yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onun gördüğü hakkında kendisiyle tartışıyor musunuz"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Onu bir kez daha görmüştü"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "En son noktada"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "Ki yanında barınılacak cennet vardır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "Tüm bölge olağanüstü biçimde kuşatılmıştı"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Göz şaşmadı, sınırı da aşmadı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Rabbinin büyük ayetlerini gördü"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gördünüz mü (dişi putlarınız olan) Lat ve Uzza'yı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Ve üçüncüleri olan Menat'ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Erkekler sizin de dişiler O'nun mu"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "Ne de insafsız bir paylaşma"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Onlar, sizin ve atalarınızın taktığı isimlerden başka bir şey değildir ve ALLAH onlar için hiç bir delil indirmemiştir. Kendilerine, Rab'lerinde bir yol gösterici geldiği halde, sadece kuruntuları ve kişisel arzularını izliyorlar"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "İnsan her umduğuna kavuşacak mıdır"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Son da ilk de ALLAH'ındır"
        }
    ]
}