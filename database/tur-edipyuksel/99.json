        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerin korkunç bir depremle sarsıldığı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yerin ağırlıklarını fışkırttığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsanın da, \"Buna ne oluyor?\" dediği zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün, insanlar yapmış oldukları kendilerine gösterilsin diye bölükler halinde çıkagelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim bir atom ağırlığı iyilikte bulunursa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim bir atom ağırlığı kötülükte bulunursa onu görür"
        }
    ]
