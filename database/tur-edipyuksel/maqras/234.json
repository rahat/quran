{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Surat astı ve döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "O kör adam geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin, belki de o arınacak"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut ta öğüt alacak ve ona mesajın yararı dokunacaktı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendisini zengin görüp önemsemeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun arınmamasından sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Oysa, sana büyük bir hevesle gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Saygı gösterdiği halde"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "İlgi göstermedin ona"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Doğrusu, bu bir hatırlatmadır"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen bundan öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Onurlu kitaplardadır"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüce ve temiz"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Elçilerin elleriyle (yazılmıştır)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Onurlu ve güzel huylu (elçiler)"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Yazıklar olsun insana; ne kadar da nankördür"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Onu hangi şeyden yaratmıştı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir spermadan onu yarattı; ölçü ve biçim verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü, mezara koydu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Dilediği zaman da onu diriltti"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Ne var ki O'nun kendisine emrettiğini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan, yiyeceğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz suyu döktükçe döktük"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Toprağı yardıkça yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Ve orada taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler, çayırlar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler, hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "İri ve sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve sebzeler"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Size ve hayvanlarınıza bir geçimlik olarak"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Sonra, o müthiş patlama gerçekleşince"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gün kişi kaçar: kardeşinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve çocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün herkesin kendisine yetecek işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün bazı yüzler var ki aydınlık"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güleç, neşeli"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gün bazı yüzler de perişan"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Karanlık bürümüştür"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar inkarcılardır, sapanlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş yuvarlandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar sönüp düştüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "En değerli mallar terkedildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Yabani hayvanlar toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kişiler çiftleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Canlı canlı gömülen kız çocuğu sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suçtan ötürü öldürüldü diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Kayıtlar yayımlandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök yerinden oynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her kişi ne yapıp getirdiğini bilir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Andolsun gizlenen yıldızlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp deliklerine girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Andolsun kararmaya başlayan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ve nefes almağa başlayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Bu, onurlu bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Güçlüdür; Yönetimin Sahibi katından yetkilidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendisine uyulmalı ve güvenilmeli"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu apaçık bir ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, hiçbir haberi gizlemiyor"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulan şeytanın sözü olamaz"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Öyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, tüm halklara bir mesajdır"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru davranmak isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ne dilerseniz, ancak evrenlerin Rabbi olan ALLAH'ın dilediğine göredir"
        }
    ]
}