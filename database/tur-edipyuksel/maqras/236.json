{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök çatladığı zaman"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve doğal yapısı gereğince Rabbine kulak verdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz edildiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçindekileri atıp boşalttığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve doğal yapısı gereğince Rabbine kulak verdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, Rabbine doğru çalışıp çabalarsın ve sonunda O'nunla karşılaşırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kitabı sağ taraftan verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve arkadaşlarına sevinç içinde dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Yok olmayı arzulayacak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve bir ateşte yanacaktır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Oysa arkadaşları arasında sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Bir daha (Rabbine) dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Doğrusu, Rabbi onu görmektedir"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Andolsun akşamın kızıllığına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Gecenin topladığına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz evreden evreye binip geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Peki onlar neden inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlara Kuran okunduğunda neden kabul etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, inkarcılar yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "ALLAH onların sakladıklarını çok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onları acı bir azapla müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İnanıp erdemli davrananlara ise kesilmez bir ödül var"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Andolsun galaksiler sahibi göğe"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Söz verilen güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Ve tanığa da tanık olunana da andolsun"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kanyon halkına yazıklar olsun"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Tutuşturulmuş ateşin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Başında oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve inananlara yaptıkları işkenceyi seyrediyorlar"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "İnananlardan nefret ediyorlardı. Sadece, onlar Üstün ve Övgüye layık olan ALLAH'a inandıkları için"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Göklerin ve yerin yönetimi O'na aittir. Ve ALLAH herşeye Tanıktır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "İnanan erkeklere ve kadınlara zulüm ve işkencede bulunan ve daha sonra tevbe etmeyenler cehennem azabını haketmişlerdir. Onlar için yakıcı bir azap vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İnanan ve erdemli davrananlar ise içlerinden ırmaklar akan cennetleri haketmişlerdir. Büyük başarı budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrusu, Rabbinin yakalaması pek çetindir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Başlatan ve tekrarlayan O'dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O Bağışlayandır, Sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Şanlı yönetimin sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediğini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların tarihinden haberin var mı"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun'un, Semud'un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "İnkarcılar, kronik yalanlayıcılardır"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "ALLAH onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Gerçekten, o şanlı bir Kuran'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Korunmuş bir ana levhadadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve Tarık'a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık'ın ne olduğunu bilir misin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Parlak yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Her kişinin üzerinde mutlaka bir koruyucu vardır"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan neden yaratılmış olduğuna bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sıvıdan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Omurga ile kaburga kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Kuşkusuz O, onu diriltmeğe gücü yetendir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizemlerin ortaya çıkarılacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Onun ne bir gücü ne de bir yardımcısı olmayacaktır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Geri çeviren göğe andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Ve yarılan yeryüzüne andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Bu, ayırdedici bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Şakaya alınamaz"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir plan kuruyor"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir plan kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Öyleyse inkarcılara az bir süre daha tanı"
        }
    ]
}