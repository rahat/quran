{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yüce Rabbinin ismini eksikliklerden uzak tut"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki yarattı, düzene koydu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O ki ölçtü, yol gösterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O ki yeşillikler bitirdi"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra onu kuruyup kararmış bir samana çevirir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacağız; sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ALLAH'ın dilediği hariç; O açığı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Sana kolayı daha da kolaylaştıracağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Öğüt yararlı olacaksa öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygı duyanlar öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Mutsuz ise ondan yan çizecektir"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ve büyük ateşe girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Nitekim, orada ne ölecek, ne de yaşayacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Kurtulmuştur arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin ismini anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ne var ki siz dünya hayatını seçiyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve süreklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, ilk sayfalarda/öğretilerde kayıtlıdır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nın sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Sana o bunaltanın haberi ulaştı mı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün yüzler saygı gösterir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmıştır, yorgun düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın ateşe girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir pınardan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Değersiz bir yiyeceğin dışında bir şeyleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün başka yüzler de var ki mutludur"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından ötürü sevinçlidir"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bir saçmalık işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak var"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yüksek mobilyalar var"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Kadehler konulmuş"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Yastıklar dizilmiş"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve halılar serilmiştir"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmazlar mı develere, nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve göğe, nasıl yükseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara, nasıl dikildi"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yere, nasıl döşendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Hatırlat, çünkü sen hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onları zorlayacak değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Fakat kim yüz çevirir ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "ALLAH onu en büyük ceza ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Onların dönüşleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Hesaplarını görmek de bize düşer"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun tan vaktine"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Çifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Ve geçmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Zeka sahipleri için bunlar birer yemin değil midir"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Görmedin mi Rabbin ne yaptı Ad halkına"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Yüksek kulelere sahip İrem'e ki"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Hiç bir ülkede eşi ortaya konmamıştı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadideki kayaları oyan Semud'a"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Ve piramitler sahibi Firavun'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Tüm bunlar ülkelerinde azmışlardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda kötülükleri yaygınlaştırmışlardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Nitekim, Rabbin de üstlerine türlü felaketler yağdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Rabbin sürekli gözetlemektedir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Rabbi, sınamak için insana bolca verip sevindirdiği zaman, \"Rabbim bana cömert davrandı,\" der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ancak ne zaman ki rızkını kısarak onu sınarsa, \"Rabbim beni küçük düşürdü,\" der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır! Doğrusu siz öksüze cömert davranmıyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmeye birbirinizi teşvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası da hak gözetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Parayı/malı da çok fazla seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Doğrusu, yer çarpılıp paralandığı zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin, dizi dizi meleklerle birlikte geldiği zaman"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ki cehennem de o gün getirilmiştir. İşte o gün insan anlayacaktır. Artık anlamanın kendisine ne yararı var ki"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Keşke bu hayatım için önceden bir şeyler yapsaydım,\" der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gün, O'nun cezası gibi bir cezayı kimse veremez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O'nun vurduğu bağ gibisini de kimse bağlayamaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey doygunluğa ermiş kişi"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Hoşnut olarak ve hoşnut olunarak Rabbine dön"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Kullarımın arasına hoşgeldin"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime hoşgeldin"
        }
    ]
}