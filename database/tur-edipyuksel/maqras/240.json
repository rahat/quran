{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi ki, mezardakiler ortaya atıldığı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Ve göğüslerde gizlenenler açığa çıkarıldığı zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Evet o gün Rab'leri onların herşeyinden haberlidir"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Şok"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Hem de ne şok"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Şoke edenin niteliği sana bildirildi mi"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün halk, yayılmış kelebekler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da atılmış yün gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, mutlu bir hayat içinde olacaktır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun da anası uçurumdur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "O uçurumun ne olduğunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çoğaltma yarışı sizi alabildiğine meşgul etti"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Mezarlara varıncaya (ölünceye) kadar"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Doğrusu, yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Elbette, yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Doğrusu, kesin olarak bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Cehennemi görürdünüz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Zaten, onu gözünüzle kesin olarak göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra, o gün (size verilen) nimetlerden sorulacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun akıp giden zamana ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "İnsanlar zarardadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak inanıp erdemli davrananlar, birbirlerine gerçeği öğütleyenler ve birbirlerine sabretmeyi öğütleyenler hariç"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Yazıklar olsun her dedikoducuya ve iftiracıya"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Ki o para/mal biriktirir ve onu sayar durur"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Sanki parası/malı onu ölümsüz yapacakmış gibi"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Asla; onu Hutama'ya atacağım"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutama'nın ne olduğunu bilir misin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "ALLAH'ın tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Ki beyinlere işler"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Onların üzerine kapanmıştır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Yükselen direkler arasında"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin fil halkını ne hale soktuğuna dikkat ettin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Planlarını boşa çıkarıp onları şaşkına çevirmedi mi"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların üstüne kuş sürüleri gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara çamurdan sertleşmiş taşlar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Ve böylece onları yenmiş ekin gibi perişan etmişti"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş (bu mesajı) bağrına basmalı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Kış ve yaz kervanlarını sevdikleri gibi"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu evin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O ki onları açlıktan kurtarıp doyurdu ve korkudan güvene kavuşturdu"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte, öksüze kötü davranan odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulları doyurmaya da yanaşmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Yazıklar olsun o namaz kılanlara"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar ki namazlarından tümüyle habersizdirler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar ki gösteriş yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardımı da engellerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana bolca nimetler verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Öyleyse Rabbin için namaz kıl ve kendini ada/yönel"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl mahfolacak olanlar sana kin duyanlardır"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki, \"Ey inkarcılar"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben, sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim taptığıma tapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben asla sizin taptığınıza tapacak değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim taptığıma tapacak değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "ALLAH'ın yardımı ve zafer geldiği zaman"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Halkın akın akın ALLAH'ın dinine girdiğini göreceksin"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini överek yücelt ve ondan bağışlanma dile. O, tevbeleri sürekli kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ateş kürükleyenin elleri kahrolsun, zaten kendisi kahroldu"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ne parası, ne de bir kazancı ona yaramadı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alev sahibi bir ateşe girecektir"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Odun taşıyan (zulmun ateşine yakıt hazırlayan) karısı da"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda, dikenlerden/liften örülmüş bir ip bulunduğu (kötülükleri boynuna dolanmış) halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki, \"O ALLAH bir tektir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "ALLAH Sonsuz ve Mutlaktır"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Doğurmamıştır, doğurulmamıştır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hiçbir kimse de O'na denk değildir"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki, \"Şafağın Rabbine sığınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Çöktüğü zaman karanlığın şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Arabozucuların, sözleşmeleri bozanların şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Kıskandığı vakit kıskananın şerrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki, \"Sığınırım halkın Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Halkın Yöneticisine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Halkın Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Şerrinden sinsice fısıldayanların"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Onlar halkın göğsüne fısıldarlar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Onlar hem cinlerden hem de halktandır"
        }
    ]
}