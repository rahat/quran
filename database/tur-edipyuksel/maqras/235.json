{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Gezegenler saçıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler akıtılıp taşırıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Mezarların içi dışına çevrildiği zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her kişi, yaptığını ve yapmadığını öğrenecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni Onurlu olan Rabbine karşı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki seni yarattı, düzenledi, uyumlu hale soktu"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Dilediği bir biçimde seni oluşturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Doğrusu, siz, dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki üstünüzde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Onlar onurlu kayıtçılardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler nimetler içindedir"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler ise cehennemde"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din Günü oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan hiç ayrılamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din Gününün ne olduğunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, Din Gününün ne olduğunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün kimsenin kimseye yardımı dokunmaz. O gün tüm kararlar yalnız ALLAH'a aittir"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Yazıklar olsun kandıranlara"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Halktan bir şey aldıklarında ölçüyü tam uygularlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Verdikleri zaman ise ölçüyü ve tartıyı eksik tutarlar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar hiç dirileceklerini sanmazlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Büyük bir günde"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gün halk Evrenlerin Rabbinin huzurunda dururlar"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Doğrusu, kötülerin yazgısı Siccin'dedir"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Siccin nedir bilir misin"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Rakamlanmış bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "O gün yalanlayanlara yazıklar olsun"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Onlar Din Gününü yalanlar"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Onu ancak azgın günahkarlar yalanlar"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Kendisine ayetlerimiz iletildiğinde, \"Efsane\" derdi"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Doğrusu, işledikleri günahlar kalplerini kaplamış"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Doğrusu, o gün onlar Rab'lerinden perdelenir"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Ve böylece onlar cehenneme atılır"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Yalanlamakta olduğunuz şey işte budur\" denir"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Doğrusu, iyilerin kitabı İlliyyun'dadır"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "İlliyyun nedir bilir misin"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Rakamlanmış bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "(Tanrı'ya) yakın olanlar ona tanık olur"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "İyiler nimetler içindedir"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Koltuklar üzerinde çevreyi seyrederler"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Yüzlerinden nimetlerin sevinç ve parıltısını okursun"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Çeşni katılmış bir nektardan içirilecekler"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Çeşnisi misktir. Yarışanlar işte bunun için yarışsınlar"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Onun karışımı Tesnimdir"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "Ki o, (Tanrı'ya) yakın olanların içtiği bir pınardır"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Suçlular, inananlara gülerlerdi"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Yanlarından geçtikleri zaman da birbirlerine göz kaş edip küçümserlerdi"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Taraftarlarının yanına döndükleri zaman da alaya alırlardı"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Onları gördüklerinde, \"Bunlar sapıklardır!\" derlerdi"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Oysa onların üzerine gözcü olarak gönderilmemişlerdi"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Bugün de inananlar inkarcılara güler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Koltuklar üzerinde bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "İnkarcılar yaptıklarıyla cezalandılar mı diye"
        }
    ]
}