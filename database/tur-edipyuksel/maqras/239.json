{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Göğsünü genişletip seni sakinleştirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Üzerindeki yükünü indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki belini bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin şanını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Elbette, kolaylık zorlukla birliktedir"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet, kolaylık zorlukla birliktedir"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Ne zaman fırsat bulursan uğraş ver"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve sadece Rabbini arzula"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun incire ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dağına"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve andolsun bu güvenilir kente (Mekke'ye) ki"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz insanı en güzel bir biçimde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Sonra onu aşağıların aşağısı kıldık"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Ancak inanıp erdemli davrananlar hariç; onlara kesintisiz bir ödül vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Artık neden hala bu dini yalanlıyorsun"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "ALLAH bilgelerin En Bilgesi değil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin ismiyle oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir embriyodan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin En Cömert/Yüce olandır"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalem yoluyla öğretir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediklerini öğretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Doğrusu, insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Zenginlik taslayarak"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Elbette, dönüş senin Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gördün mü, şu engelleyeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ne dersin, o doğru yolu izleseydi"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut erdemliliği öğütleseydi"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ne dersin, o yalanlayıp yüz çevirdiyse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki ALLAH herşeyi görmektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Doğrusu, buna son vermezse, yakalarız perçeminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı ve günahkar perçeminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman haydi çağırsın kurultayını"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağıracağız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Asla, ona uyma; secde et ve yaklaş"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Biz onu Kudret Gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kudret Gecesi ne kadar önemlidir, bilir misin"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kudret Gecesi bin aydan daha hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh (Cebrail) o gece Rab'lerinin izniyle tüm buyrukları yerine getirmek için inerler"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "O, tan yeri ağarıncaya kadar esenliktir"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap halkının inkarcıları ve putperestler, kendilerine açık delil/kanıt gelmesine rağmen yollarını terketmezler"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "ALLAH'ın bir elçisi kendilerine arınmış sahifeler okuyor"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "Onda dosdoğru öğretiler vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Gerçek şu ki, kendilerine kitap verilmiş olanlar, ancak onlara açık delil geldikten sonra ayrılığa düştüler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Oysa onlardan, dini sadece ALLAH'a ait kılan tektanrıcılar (monoteist) olarak O'na kulluk etmeleri, namazı gözetmeleri ve zekatı vermeleri istenmişti. İşte dosdoğru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap halkının inkarcıları ve putperestler, cehennem ateşinin içindedirler ve orada ebedi kalıcıdırlar. Onlar, yaratıkların en kötüsüdür"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "İnanıp erdemli davrananlar ise yaratıkların en iyisidir"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Rableri katındaki ödülleri, içinden ırmaklar akan cennetlerdir. Orada ebedi olarak kalacaklardır. ALLAH onlardan hoşnut olmuş, onlar da O'ndan hoşnut olmuşlardır. Rabbine saygı gösterenin ödülü işte böyledir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerin korkunç bir depremle sarsıldığı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yerin ağırlıklarını fışkırttığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsanın da, \"Buna ne oluyor?\" dediği zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün, insanlar yapmış oldukları kendilerine gösterilsin diye bölükler halinde çıkagelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim bir atom ağırlığı iyilikte bulunursa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim bir atom ağırlığı kötülükte bulunursa onu görür"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun soluyarak aşanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "Ateş saçarak gidenlere"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah sabah akın edenlere"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Toz koparanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Ve topluluğun içine dalanlara ki"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "İnsan Rabbine karşı çok nankördür"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Üstelik buna da tanıktır"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "O mala çok düşkündür"
        }
    ]
}