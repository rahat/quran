{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi birbirlerine sorup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Büyük haberi mı"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar onda anlaşmazlık halindedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, öğreneceklerdir"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Hayır, kesinlikle öğreneceklerdir"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yapmadık mı yeryüzünü bir beşik"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi çiftler halinde yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir örtü yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü de geçimi sağlama zamanı olarak belirledik"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ve üstünüze yedi sağlam (göğü) kurduk"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Parlayan bir lamba yerleştirdik"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Bulutlardan ise şarıl şarıl yağmur indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ki onunla taneler ve bitkiler"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve çeşit çeşit bahçeler çıkaralım"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Yargılama Günü, belirlenmiş bir vakittedir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur'a üfürüldüğü gün, hepiniz bölük bölük gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gök açılmış; kapı kapı olmuştur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Dağlar yürütülmüş; serap olmuştur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem ise gözetlemekte"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlar için bir varış yeri olarak"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada çağlar boyu kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada bir serinlik ve bir içecek bulamazlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ancak kaynar su ve acı bir yiyecek hariç"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına uygun bir karşılık olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Onlar bir hesap ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve ayetlerimizi, mucizelerimizi yalanladılar"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Halbuki biz herşeyi sayıp yazmıştık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Öyleyse tadın, sizin sadece cezanızı arttıracağız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Erdemliler için kurtuluş vardır"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bağlar, bahçeler"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Genç ve yaşıt eşler"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Dolu kadehler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada ne bir boş söz ne de bir yalan işitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Rabbinden bir karşılık; hesaplanmış bir armağandır"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Göklerin, yerin ve aralarındakilerin Rabbidir, Rahman'dır. Hiç bir davada O'na hitap edemezler"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Gün gelecek Ruh ve melekler sıra sıra dururlar. Rahman'ın izin verdikleri hariç hiç kimse konuşamaz. Onlar da doğruyu söylerler"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "İşte gerçek gün budur. Dileyen, Rabbine doğru yol tutsun"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azap ile uyarmış bulunuyoruz. O gün kişi yapmış olduklarına bakar ve inkarcı ise, \"Keşke toprak olsaydım!\" der"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun söküp çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Rahatça çekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp akanlara"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarışıp birbirlerini geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve böylece emirleri uygulayanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün o sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir diğeri izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün yürekler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri ise alçalır"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki, \"Daha önceki halimize mi döndürüldük"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz çürümüş kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyleyse bu zararına bir dönüştür,\" derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O bir tek dürtüşten ibarettir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Onlar uyanıvermişlerdir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Sana Musa'nın tarihi ulaştı mı"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Rabbi, kutsal Tuva vadisinde ona seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun'a git; o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: Arınmayacak mısın"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbine ileteyim de saygılı olasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve karşı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra, sırtını döndü, (aleyhte) çaba gösterdi"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp, ilan etti"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben sizin en yüce rabbinizim,\" dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Sonunda, ALLAH onu ahiret ve dünya cezasına çarptı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Kuşkusuz, saygı duyanlar için bunda bir ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Siz mi, yoksa gök mü yaratılış açısından daha zorludur? Onu O yaptı"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Onu alabildiğine yükseltti ve düzenledi"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, sabahını ise ortaya çıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeri de yumurta biçimine soktu"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlağını çıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dağları da çaktı"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Tüm bunlar sizin ve hayvanlarınızın geçimi için"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Büyük baskın geldiği zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gün insan, neyin uğrunda çaba harcadığını anlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cehennem göz önüne çıkarılacaktır"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Azgınlara"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dünya hayatını yeğleyenlere gelince"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Gidilecek yer cehennem olacaktır"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Rabbinin makamına karşı saygı duyan ve kendini kötü arzulardan alıkoyanlara gelince"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Gidilecek yer cennet olacaktır"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana Saat (dünyanın sonu) ne zaman gerçekleşecektir diye soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Onu bildirmek, (ey Muhammed) senin görevin değildir"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun kararı Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Senin görevin, sadece ondan korkanları uyarmaktır"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gördükleri gün, sanki (dünyada) bir akşam veya kuşluk vakti kadar kalmışlardır"
        }
    ]
}