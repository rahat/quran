{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "And içerim bu kente"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Ki sen bu kentte oturmaktasın"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Doğurana ve doğurduğuna da andolsun"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "İnsanı zorluklar arasında (direnmesi için) yarattık"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Kendisine güç yetiremiyeceğimizi mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "(Övünerek) \"Çok para harcadım,\" diyor"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Kimsenin kendisini görmediğini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Ona vermedik mi: İki göz"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Bir dil ve iki dudak"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Ona iki yolu göstermedik mi"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Ne var ki zor yola katlanamadı"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Zor yolun ne olduğunu bilir misin"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Köleleri özgürlüklerine kavuşturmaktır"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "Kıtlık anında doyurmaktır"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "Akraba bir öksüzü"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "Yahut düşkün bir yoksulu"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Dahası, birbirlerine sabır ve sevgiyi öğütleyen inananlardan olmaktır"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Nitekim mutlular onlardır"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Ayet ve mucizelerimizi inkar edenlerse talihsizlerdir"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Onlar ateşe kapatılacaklardır"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve onun aydınlığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izleyen aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu açığa çıkaran gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu örten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu kurana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yuvarlayıp döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu düzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kötülüğünü ve erdemliliğini bildirene andolsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu temizleyen kurtulmuştur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu başıboş bırakan ise zarar etmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud (halkı), azgınlığı yüzünden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ayaklanmıştı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "ALLAH'ın elçisi, onlara, \"ALLAH'ın devesine ve onun suyuna dokunmayın,\" demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanlayıp deveyi boğazladılar. Bunun üzerine Rab'leri suçlarından ötürü onları silip yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Ne var ki hâlâ onların sonlarından ders alınmıyor"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun bürüdüğü zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya çıktığı zaman gündüze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "İşleriniz çeşit çeşittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir ve erdemli davranır"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve iyiyi, güzeli doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona iyice kolaylaştırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat, kim cimrilik edip zenginlik taslar"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve iyiyi, güzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da zora yöneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Düştüğü vakit kurtaramaz parası/malı onu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğruya biz iletiriz"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Sonu da ilki de biz kontrol ederiz"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alevli bir ateşe karşı uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Oraya talihsiz olandan başkası girmez"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "O ki yalanladı ve sırtını döndü"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Erdemli ise ondan uzak tutulacaktır"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "O ki malını vererek temizlenir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "Hiç kimseden de buna karşılık bir iyilik beklemez"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Sadece En Yüce olan Rabbinin rızasını gözetir"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Kendisi de yakında mutlu olacaktır"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Andolsun kuşluk vaktine"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "Ve dingin olduğu zaman geceye"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Rabbin seni ne bıraktı ne de sana darıldı"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "Senin için son (ahiret) ilkten (dünyadan) daha iyidir"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Rabbin yakında sana verecek ve sen de beğeneceksin"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Seni bir öksüz olarak bulup barındırmadık mı"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Seni bir sapık olarak bulup doğruya iletmedik mi"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "Seni fakir bulup zengin etmedik mi"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Öyleyse, öksüzü yüzüstü bırakma"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "Dilenciyi de azarlama"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "Ve Rabbinin sana yaptığı iyilikleri de anlat"
        }
    ]
}