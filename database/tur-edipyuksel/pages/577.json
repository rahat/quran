    "pages": [
        {
            "chapter": 74,
            "verse": 48,
            "text": "Aracıların şefaati onlara bir yarar sağlamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Öyleyse neden bu mesajdan yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Ürkmüş zebralar gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan kaçan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her biri, kendisine özel olarak açılmış sayfalar verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Doğrusu, onlar ahiretten korkmuyor"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Doğrusu, bu bir öğüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan öğüt alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "ALLAH dilemezse onlar öğüt alamazlar. O, erdemli davranmanın kaynağıdır; bağışlamanın kaynağıdır"
        },
        {
            "chapter": 75,
            "verse": 1,
            "text": "Diriliş Gününe and içerim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Sürekli özeleştiride bulunan kişiye and içerim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "İnsan, kemiklerini bir araya toplayamayız mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet; parmak uçlarını bile düzenlemeye gücümüz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Doğrusu, insan her şeyin önüne sergilenmesini ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Diriliş Günü ne zaman?\" diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Gözün kamaştığı"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ayın tutulduğu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve güneş ile ay bir araya toplandığı zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gün insanoğlu, \"Kaçacak yer nerede?\" der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, bir sığınak yok"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gün son durak Rabb'inin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gün insana, yapıp yapmadığı herşey haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Doğrusu, insan kendi kendisine tanıktır"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Birtakım özürler ortaya atsa da"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu aceleye getirip dilini oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Onu toplamak da okutmak da bize düşer"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Biz onu okuduğumuz zaman, onun okunuşunu izle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra, onu açıklamak da bizim görevimizdir"
        }
    ]
}