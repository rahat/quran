        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi değersiz bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Ve sonra onu iyi korunan bir yere yerleştirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Biz ölçtük, biçtik. Biz en iyi biçim verenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryüzünü bir toplanma yeri yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Yaşayanlar için, ölüler için"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Üzerine yüksek dağlar yerleştirip size tatlı su içirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yalanlamakta olduğunuz şeye doğru yürüyün"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Yürüyün, (cehennem alevinin) üç kollu gölgesine doğru"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "O ne gölgelendirir ne de alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Kıvılcımlar saçar, saraylar gibi"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "(Rengi de) Sarı deve gibi"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konuşamıyacağı bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ve özür dilemeleri için onlara izin de verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, Karar Günüdür. Sizi ve öncekileri toplamışızdır"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir planınız varsa bana karşı onu uygulayın"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Erdemliler gölgeliklerde ve pınarlar arasında"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının çektiği meyvalar"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınıza karşılık afiyetle yiyip için"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "İyi davrananları işte böyle ödüllendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyiniz ve geçici olarak eğleniniz; siz suçlularsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara eğilin dendiğinde eğilmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Yalanlayanların vay haline o gün"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Artık bundan sonra hangi hadise (söze) inanırlar"
