{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onlara ölümsüz gençler servis yaparlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynaktan doldurulmuş bardaklar, sürahiler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne ara verirler ne de yorulurlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Güzel eşler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Korunmuş inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmış olduklarına bir karşılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bir saçmalık, ne de günaha sokan bir söz işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece, \"Selam, selam,\" derler"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağ tarafta olanlar sağ tarafta olacaklar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz meyve ağaçları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmış muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fışkıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bol meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bunlar ne tükenirler, ne de yasak edilirler"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve onlar yükseltilmiş mobilyalar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden biçimlendirdik"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, gençleştirdik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Mükemmel biçimde eşlenmişlerdir"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ tarafta olanlar içindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Onların bir çoğu önceki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Onların bir çoğu da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol tarafta bulunanlar, sol tarafta olacaklardır"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İşleyen ve kaynayan bir azap içindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Sıcak gölgeler altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne soğuktur, ne de yararlı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Bundan önce onlar konfor içinde şımarmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı işlemekte direniyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Diyorlardı ki, \"Biz öldükten, toz ve kemiğe dönüştükten sonra mı diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki, \"Öncekiler de, sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Bilinen günün buluşma anı için toplanacaklardır"
        }
    ]
}