{
    "pages": [
        {
            "chapter": 70,
            "verse": 11,
            "text": "Birbirlerine gösterilirler. Suçlu, o günün azabından kurtulmak için fidye vermek ister: Oğullarını"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "Eşini, kardeşini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "Kendisini yetiştiren tüm akrabalarını"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "Ve yeryüzünde bulunan herkesi, ki kurtulsun"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Hayır, o alevli ateştir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Yakmak için isteklidir"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Çağırır, sırtını dönüp gideni"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "Toplayıp kasaya saklayanı"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Doğrusu insan endişeli bir karaktere sahiptir"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine kötülük dokunduğu zaman ümidini keser"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Kendisine iyilik dokunduğu zaman ise cimridir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak namaz kılanlar hariç"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Onlar ki namazlarını kaçırmazlar"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "Paralarında bilinen bir pay (zekat) ayrılmıştır"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "İsteyen yoksula ve yoksuna"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "Onlar Din Gününü doğrularlar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rab'lerinin azabından çekinirler"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Rab'lerinin azabına güven olmaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "Onlar cinsel ilişkiden sakınırlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Ancak eşleri, yahut yeminlerinin/anlaşmalarının hak sahibi olduklari hariç; onlardan dolayı yerilmezler"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "bunun ötesini arayanlar ise aşırı gidenlerdir"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Onlar güvenilirdirler, sözlerine bağlıdırlar"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Gereği gibi tanıklıkta bulunurlar"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarına özen gösterirler"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "Onlar cennetlerde ağırlanırlar"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "Peki şimdi inkarcılara ne oluyor da senin önünde koşuşuyorlar"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "Sağdan, soldan gruplar halinde"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "Herbiri, nimet cennetine sokulacağını mı umuyor"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "Asla; biz onları yarattık, bildikleri şeyden"
        }
    ]
}