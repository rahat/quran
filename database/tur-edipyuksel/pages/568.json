{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "Bu yüzden onun buralarda bir dostu yoktur"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "Hiç bir yiyeceği de... İrin hariç"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "Onu ancak günahkarlar yer"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "Yemin ederim gördüklerinize"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "Ve görmediklerinize"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "Ki bu şerefli bir elçinin (getirdiği) sözdür"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "O bir şair sözü değildir; ne de az inanıyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "Kahin sözü de değildir; ne de az düşünüyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Evrenlerin Rabbinden indirilmedir"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "O bize bazı sözler yakıştırsa"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "Biz onu kuvvetle yakalar"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "Sonra, ondan vahyi keserdik"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "Ve sizden kimse de buna engel olamazdı"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "Kuşkusuz bu, erdemliler için bir hatırlatmadır"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "İçinizden yalanlayanlar olduğunu iyi biliyoruz"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "O, inkarcılar için bir üzüntü kaynağıdır"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "O, kuşkusuz mutlak gerçektir"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Öyleyse Büyük olan Rabbinin ismini yücelt"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "Sorgulayan birisi, gerçekleşecek azabı sordu"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Onu inkarcılardan savacak kimse yoktur"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Yükseliş Yollarının Sahibi olan ALLAH'tandır"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve ruh (vahiy/komutlar/Cebrail), elli bin yıla eşit bir gün içinde O'na yükselir"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Şimdi sen güzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Onlar onu uzak görüyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın görüyoruz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "Gün gelecek, gök erimiş maden gibi"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Dağlar ise atılmış yün gibi olur"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost dostun durumunu sormaz"
        }
    ]
}