{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ne var ki siz dünya hayatını seçiyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve süreklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, ilk sayfalarda/öğretilerde kayıtlıdır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nın sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Sana o bunaltanın haberi ulaştı mı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün yüzler saygı gösterir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmıştır, yorgun düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın ateşe girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir pınardan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Değersiz bir yiyeceğin dışında bir şeyleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün başka yüzler de var ki mutludur"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından ötürü sevinçlidir"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bir saçmalık işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak var"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yüksek mobilyalar var"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Kadehler konulmuş"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Yastıklar dizilmiş"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve halılar serilmiştir"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmazlar mı develere, nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve göğe, nasıl yükseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara, nasıl dikildi"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yere, nasıl döşendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Hatırlat, çünkü sen hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onları zorlayacak değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Fakat kim yüz çevirir ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "ALLAH onu en büyük ceza ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Onların dönüşleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Hesaplarını görmek de bize düşer"
        }
    ]
}