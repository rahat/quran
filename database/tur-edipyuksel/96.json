{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin ismiyle oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir embriyodan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin En Cömert/Yüce olandır"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalem yoluyla öğretir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediklerini öğretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Doğrusu, insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Zenginlik taslayarak"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Elbette, dönüş senin Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gördün mü, şu engelleyeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ne dersin, o doğru yolu izleseydi"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut erdemliliği öğütleseydi"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ne dersin, o yalanlayıp yüz çevirdiyse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki ALLAH herşeyi görmektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Doğrusu, buna son vermezse, yakalarız perçeminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı ve günahkar perçeminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman haydi çağırsın kurultayını"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağıracağız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Asla, ona uyma; secde et ve yaklaş"
        }
    ]
}