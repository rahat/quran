{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "جب آسمان چِر جائے"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "اور جب تارے جھڑ پڑیں"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "اور جب دریا ابل نکلیں [۱]"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "اور جب قبریں زیروزبر کر دی جائیں [۲]"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "جان لے ہر ایک جی جو کچھ کہ آگے بھیجا اور پیچھے چھوڑا [۳]"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "اے آدمی کس چیز سے بہکا تو اپنے رب کریم پر [۴]"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "جس نے تجھ کو بنایا پھر تجھ کو ٹھیک کیا پھر تجھ کو برابر کیا [۵]"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "جس صورت میں چاہا تجھ کو جوڑ دیا [۶]"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "ہرگز نہیں پر تم جھوٹ جانتے ہو انصاف کا ہونا [۷]"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "اور تم پر نگہبان مقرر ہیں"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "عزت والے عمل لکھنے والے"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "جانتے ہیں جو کچھ تم کرتے ہو [۸]"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "بیشک نیک لوگ بہشت میں ہیں [۹]"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "اور بیشک گنہگار دوزخ میں ہیں"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "ڈالے جائیں گے اُس میں انصاف کے دن"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "اور نہ ہوں گے اُس سے جدا ہونے والے [۱۰]"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "اور تجھ کو کیا خبر ہے کیسا ہے دن انصاف کا"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "پھر بھی تجھ کو کیا خبر ہے کیسا ہے دن انصاف کا"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "جس دن کہ بھلا نہ کر سکے کوئی جی کسی جی کا کچھ بھی [۱۱] اور حکم اُس دن اللہ ہی کا ہے [۱۲]"
        }
    ]
}