{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج کی دھوپ تہہ ہو جائے [۱]"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "اور جب تارے میلے ہو جائیں [۲]"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں [۳]"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب بیاتی اونٹنیاں چھٹی پھریں [۴]"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب جنگل کے جانوروں میں رول پڑ جائے [۵]"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب دریا جھونکے جائیں [۶]"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب جیوں کے جوڑے باندھے جائیں [۷]"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب بیٹی جیتی گاڑ دی گئ کو پوچھیں"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ کس گناہ پر وہ ماری گئ [۸]"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب اعمالنامے کھولے جائیں"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کا پوست اتار لیں [۹]"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب دوزخ دہکائی جائے"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب بہشت پاس لائی جائے [۱۰]"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "جان لے گا ہر ایک جی جو لے کر آیا [۱۱]"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "سو قسم کھاتا ہوں میں پیچھے ہٹ جانے والوں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "سیدھے چلنے دبک جانے والوں کی [۱۲]"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی جب پھیل جائے [۱۳]"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی جب دم بھرے [۱۴]"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "مقرر یہ کہا ہے ایک بھیجے ہوئے عزت والے کا"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "قوت والا عرش کے مالک کے پاس درجہ پانے والا"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "سب کا مانا ہوا وہاں کا معتبر [۱۵]"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور یہ تمہارا رفیق کچھ دیوانہ نہیں [۱۶]"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اور اس نے دیکھا ہے اُس فرشتہ کو آسمان کے کھلے کنارہ کے پاس [۱۷]"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور یہ غیب کی بات بتانے میں بخیل نہیں [۱۸]"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ کہا ہوا نہیں کسی شیطان مردود کا [۱۹]"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم کدھر چلے جا رہے ہو [۲۰]"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو ایک نصیحت ہے جہان بھر کے واسطے [۲۱]"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "جو کوئی چاہے تم میں سے کہ سیدھا چلے [۲۲]"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم جبھی چاہو کہ چاہے اللہ سارے جہان کا مالک [۲۳]"
        }
    ]
}