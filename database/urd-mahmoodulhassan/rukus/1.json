{
    "rukus": [
        {
            "chapter": 1,
            "verse": 1,
            "text": "شروع اللہ کے نام سے جو بڑا مہربان نہایت رحم والا ہے [۱]"
        },
        {
            "chapter": 1,
            "verse": 2,
            "text": "سب تعریفیں اللہ کے لئے ہیں [۲] جو پالنے والا سارے جہان کا [۳]"
        },
        {
            "chapter": 1,
            "verse": 3,
            "text": "بےحد مہربان نہایت رحم والا"
        },
        {
            "chapter": 1,
            "verse": 4,
            "text": "مالک روز جزا کا [۴]"
        },
        {
            "chapter": 1,
            "verse": 5,
            "text": "تیری ہی ہم بندگی کرتے ہیں اور تجھی سے مدد چاہتے ہیں [۵]"
        },
        {
            "chapter": 1,
            "verse": 6,
            "text": "بتلا ہم کو راہ سیدھی"
        },
        {
            "chapter": 1,
            "verse": 7,
            "text": "راہ ان لوگوں کی جن پر تو نے فضل فرمایا [۶] جن پر نہ تیرا غصہ ہوا اور نہ وہ گمراہ ہوئے [۷]"
        }
    ]
}