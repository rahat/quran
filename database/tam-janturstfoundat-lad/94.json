{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Nām, um itayattai umakkāka virivākkavillaiyā"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "mēlum, nām um'mai viṭṭum um cumaiyai iṟakkiṉōm"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "atu um mutukai muṟittuk koṇṭuṭiruntatu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "mēlum, nām umakkāka um'muṭaiya pukaḻai mēlōṅkac ceytōm"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "ātaliṉ niccayamākat tuṉpattuṭaṉ iṉpam irukkiṟatu"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "niccayamāka tuṉpattuṭaṉ iṉpam irukkiṟatu"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "eṉavē, (vēlaikaḷiliruntu) nīr ōyntatum (iṟaivaḻiyilum, vaṇakkattilum) muyalvīrāka"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "mēlum, muḻu maṉattuṭaṉ um iṟaivaṉ pāl cārntu viṭuvīrāka"
        }
    ]
}