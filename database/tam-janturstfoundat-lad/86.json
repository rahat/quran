{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "vāṉattiṉ mītu cattiyamāka! Tārik mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "tārik eṉṉaveṉṟu umakku aṟivittatu etu"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "atu ilaṅkum oru naṭcattiram"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "ovvoru ātmāvukku oru pātukāvalar illāmalillai"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "maṉitaṉ etiliruntu paṭaikkappaṭṭāṉ eṉpatai kavaṉikkaṭṭum"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "kutittu veḷippaṭum (oru tuḷi) nīriṉāl paṭaikkappaṭṭāṉ"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "mutukan taṇṭiṟkum, vilā elumpukaḷukkum iṭaiyiliruntu atu veḷiyākiṟatu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "iṟaivaṉ (maṉitaṉ iṟanta piṉ avaṉai uyirppittu) mīṭṭum caktiyuṭaiyavaṉ"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "irakaciyaṅkaḷ yāvum veḷippaṭṭuviṭum annāḷil"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "maṉitaṉukku enta palamum irātu, (avaṉukku) utavi ceypavaṉum illai"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "(tirumpat tirumpap) poḻiyum maḻaiyai uṭaiya vāṉattiṉ mītu cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(tāvaraṅkaḷ muḷaippataṟkup) piḷavu paṭum pūmiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "niccayamāka itu (kur'āṉ cattiyattaiyum, acattiyattaiyum) pirittu aṟivikkakkūṭiya vākkākum"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "aṉṟiyum, itu vīṇāṉa (vārttaikaḷaik koṇṭa)tu alla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "niccayamāka avarkaḷ (umakketirākac) cūḻcci ceykiṟārkaḷ"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "nāṉum (avarkaḷukketirākac) cūḻcci ceykiṟēṉ"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "eṉavē, kāḥpirkaḷukku nīr avakācamaḷippīrāka, coṟpamāka avakācam aḷippīrāka"
        }
    ]
}