{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "cūriyaṉ (oḷiyillātatākac) curuṭṭappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "naṭcattiraṅkaḷ (oḷiyiḻantu) utirntu viḻumpōtu"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "malaikaḷ peyarkkappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "cūl niṟainta oṭṭakaikaḷ (kavaṉippāraṟṟu) viṭappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kāṭṭu mirukaṅkaḷ (maṉitarkaḷuṭaṉum, itara pirāṇikaḷuṭaṉum) oṉṟu cērkkappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kaṭalkaḷ tī mūṭṭappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "uyirkaḷ oṉṟiṇaikkappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "uyiruṭaṉ putaikkappaṭṭa peṇ (kuḻantai) viṉavappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "entak kuṟṟattiṟkāka atu kollappaṭṭatu?\" Eṉṟu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "paṭṭōlaikaḷ virikkappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "vāṉam akaṟṟappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "narakam koḻuntuviṭṭu eriyumāṟu ceyyappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "cuvarkkam camīpamāka koṇṭu varappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "ovvōr ātmāvum, tāṉ koṇṭu vantatai aṟintu koḷḷum"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "eṉavē, piṉṉē vilakic celpavai (kirakaṅkaḷiṉ) mītu cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "muṉ ceṉṟu koṇṭiruppavai maṟaipavai (mītum)"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "piṉvāṅkic cellum iraviṉ mītum"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "mūccuviṭṭuk koṇṭeḻum vaikaṟaiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "niccayamāka (ikkur'āṉ) mikavum kaṇṇiyamikka oru tūtuvar (jiprayīl mūlam vanta) collākum"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(avar) caktimikkavar; arṣukkuṭaiyavaṉiṭam perum pataviyuṭaiyavar"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(vāṉavar tam) talaivar; aṉṟiyum nampikkaikkuriyavar"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "mēlum uṅkaḷ tōḻar paittiyakkārar allar"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "avar tiṭṭamāka avarai (jiprayīlai) teḷivāṉa aṭivāṉattil kaṇṭār"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "mēlum, avar maṟaivāṉa ceytikaḷai kūṟuvatil ulōpittaṉam ceypavarallar"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "aṉṟiyum, itu viraṭṭappaṭṭa ṣaittāṉiṉ vākkalla"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "eṉavē, (nērvaḻiyai viṭṭum) nīṅkaḷ eṅkē celkiṉṟīrkaḷ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "itu, akilattārukkellām upatēcamākum"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Uṅkaḷil niṉṟum yār nērvaḻiyai virumpukiṟārō, avarukku (nallupatēcamākum)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "āyiṉum, akilaṅkaḷukkellām iṟaivaṉākiya allāh nāṭiṉālaṉṟi nīṅkaḷ (nallupatēcam peṟa) nāṭamāṭṭīrkaḷ"
        }
    ]
}