{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "(yāvaṟṟaiyum) paṭaitta um'muṭaiya iṟaivaṉiṉ tirunāmattaik koṇṭu ōtuvīrāka"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "alak' eṉṟa nilaiyiliruntu maṉitaṉai paṭaittāṉ"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "ōtuvīrāka: Um iṟaivaṉ māperum koṭaiyāḷi"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "avaṉē eḻutu kōlaik koṇṭu kaṟṟuk koṭuttāṉ"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "maṉitaṉukku avaṉ aṟiyātavaṟṟaiyellām kaṟṟuk koṭuttāṉ"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "eṉiṉum niccayamāka maṉitaṉ varampu mīṟukiṟāṉ"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "avaṉ taṉṉai (iṟaivaṉiṭamiruntu) tēvaiyaṟṟavaṉ eṉṟu kāṇum pōtu"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "niccayamāka avaṉ mīḷutal um'muṭaiya iṟaivaṉpālē irukkiṟatu"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "taṭai ceykiṟāṉē (avaṉai) nīr pārttīrā"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "ōr aṭiyārai - avar toḻumpōtu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Nīr pārttīrā? Avar nērvaḻiyil iruntu koṇṭum"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "allatu avar payapaktiyaik koṇṭu ēviyavāṟu iruntum"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "avarai avaṉ poyyākki, mukattait tiruppik koṇṭāṉ eṉpatai nir pārttīrā"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "niccayamāka allāh (avaṉaip) pārkkiṟāṉ eṉpatai avaṉ aṟiyavillaiyā"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "appaṭiyalla: Avaṉ vilakik koḷḷavillaiyāṉāl, niccayamāka nām (avaṉuṭaiya) muṉṉeṟṟi rōmattaip piṭittu avaṉai iḻuppōm"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "tavaṟiḻaittu poyyuraikkum muṉṉeṟṟi rōmattai"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "ākavē, avaṉ taṉ capaiyōrai aḻaikkaṭṭum"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "nāmum narakak kāvalāḷikaḷai aḻaippōm"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "(avaṉ kūṟuvatu pōlalla) avaṉukku nīr vaḻipaṭātīr; (um iṟaivaṉukku) sujūtu ceytu (vaṇaṅki avaṉai) neruṅkuvīrāka"
        }
    ]
}