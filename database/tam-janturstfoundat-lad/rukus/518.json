{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "etaippaṟṟi avarkaḷ oruvarukkoruvar kēṭṭukkoḷkiṉṟaṉar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "makattāṉa acceytiyaip paṟṟi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "etaippaṟṟi avarkaḷ vēṟupaṭ(ṭa karuttukkaḷ koṇ)ṭirukkiṟārkaḷō ataip paṟṟi"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "avvāṟaṉṟu! Avarkaḷ viraivil aṟintukoḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "piṉṉarum (cantēkamiṉṟi) avarkaḷ viraivilēyē aṟintukoḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "nām ippūmiyai virippāka ākkavillaiyā"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "iṉṉum, malaikaḷai muḷaikaḷāka ākkavillaiyā"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "iṉṉum uṅkaḷai jōṭi jōṭiyākap paṭaittōm"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "mēlum, uṅkaḷuṭaiya tūkkattai iḷaippāṟutalāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "aṉṟiyum, iravai uṅkaḷukku āṭaiyāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "mēlum, pakalai uṅkaḷ vāḻkkai (vacatikaḷait tēṭikkoḷḷum kālam) ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Uṅkaḷukkumēl palamāṉa ēḻuvāṉaṅkaḷai uṇṭākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "oḷivīcum viḷakkai(cūriyaṉai)yum (aṅku) amaittōm"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "aṉṟiyum, kārmēkaṅkaḷiliruntu poḻiyum maḻaiyaiyum iṟakkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ataik koṇṭu tāṉiyaṅkaḷaiyum, tāvaraṅkaḷaiyum nām veḷippaṭuttuvataṟkāka"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "(kiḷaikaḷuṭaṉ) aṭarnta cōlaikaḷaiyum (veḷippaṭuttuvataṟkāka)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "niccayamākat tīrppukkuriya nāḷ, nēraṅkuṟikkappaṭṭatākavē irukkiṟatu"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "sūr (ekkāḷam) ūtappaṭum annāḷil nīṅkaḷ aṇi'aṇiyāka varuvīrkaḷ"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "iṉṉum, vāṉam tiṟakkappaṭṭu pala vācalkaḷākiviṭum"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "malaikaḷ peyarkkappaṭṭu kāṉal nīrākiviṭum"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "niccayamāka narakam etirpārttuk koṇṭirukkiṉṟatu"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "varampu mīṟivarkaḷukkut taṅkumiṭamāka"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "atil avarkaḷ pala yukaṅkaḷākat taṅkiyirukkum nilaiyil"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "avarkaḷ atil kuḷircciyaiyō, kuṭippaiyō cuvaikkamāṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "kotikkum nīraiyum cīḻaiyum tavira"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(atutāṉ avarkaḷukkut) takka kūliyākum"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "niccayamāka avarkaḷ kēḷvi kaṇakkil nampikkai koḷḷāmalēyē iruntaṉar"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "aṉṟiyum avarkaḷ nam vacaṉaṅkaḷaip poyyeṉak kūṟi poyyākkik koṇṭiruntārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "nām ovvoru poruḷaiyum pativēṭṭil pativu ceytirukkiṉṟōm"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "ākavē cuvaiyuṅkaḷ - vētaṉaiyait tavira vēṟu etaṉaiyum uṅkaḷukku nām atikap paṭutta māṭṭōm\" (eṉṟu avarkaḷukkuk kūṟappaṭum)"
        }
    ]
}