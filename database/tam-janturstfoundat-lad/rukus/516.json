{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "toṭarcciyāka aṉuppappaṭupavai (kāṟṟu)kaḷ mītu cattiyamāka"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "vēkamāka vīcukiṟavai (puyal kāṟṟukaḷ) mītu (cattiyamāka)"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "(mēkaṅkaḷaip) paravalākap parappum (maḻaik kāṟṟukaḷ) mītu cattiyamāka"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "(cattiyattaiyum acattiyattaiyum) vēṟupaṭutti kāṭṭuvōr (vāṉavarkaḷ) mītum (cattiyamāka)"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "(itayaṅkaḷil) upatēcattaip pōṭuvōr (vāṉavar) mītum (cattiyamāka)"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(anta upatēcam) maṉṉippaiyō, allatu eccarikkaiyaiyō (uḷḷaṭakkiyatākum)"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "niccayamāka uṅkaḷukku vākkaḷikkappaṭṭatu nikaḻvatēyākum"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "iṉṉum, naṭcattiraṅkaḷ aḻikkappaṭumpōtu"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "mēlum, vāṉam piḷakkappaṭum pōtu"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "aṉṟiyum, malaikaḷ (tūcikaḷaip pōl) paṟakkaṭikkappaṭumpōtu"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "mēlum, tūtarkaḷukku(t tam camūkattārukkākac cāṭciyam kūṟa) nēram kuṟikkappaṭumpōtu"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "enta nāḷvarai (ivaiyellām) piṟpaṭuttappaṭṭirukkiṉṟaṉa"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "tīrppukkuriya nāḷukkākattāṉ"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "mēlum, tīrppukkuriya nāḷ eṉṉaveṉṟu umakku etu aṟivittatu"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "(nam vacaṉaṅkaḷaip) poyppippōrukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "muṉṉōr(kaḷil kuṟṟavāḷi)kaḷai nām aḻikkavillaiyā"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Piṟaku piṉṉuḷḷavar(kaḷil kuṟṟavāḷi)kaḷaiyum (aḻintavarkaḷaip) piṉ toṭarac ceyvōm"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "kuṟṟavāḷikaḷai ivvāṟutāṉ nām ceyvōm (taṇṭippōm)"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "poyppippavarkaḷukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "aṟpa nīrttuḷiyiliruntu uṅkaḷai nām paṭaikkavillaiyā"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "piṉṉar ataṉaip pattiramāṉa iṭattil (karppattil) uṟutiyāka ākkivaittōm"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "oru kuṟippiṭaṭa (kāla) aḷavu varai"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "ivvāṟu nāmē atai amaittirukkiṉṟōm. Amaippōril nāmē mēlāṉōr"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "poyppipvarkaḷukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "pūmiyai uṅkaḷai aṇaittu (iṭam tantu)k koṇṭiruppatāka nām ākkavillaiyā"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "uyiruḷḷōrukkum, marittōrukkum (atu iṭam aḷikkiṟatu)"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "aṉṟiyum, atil uyarnta malaikaḷaiyum nām ākkiṉōm; iṉimaiyāṉa taṇṇīraiyum nām uṅkaḷukkup pukaṭṭiṉōm"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "poyppipvarkaḷukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "nīṅkaḷ etaip poyppaṭuttik koṇṭiruntīrkaḷō, ataṉ pāl naṭappīrkaḷāka\" (eṉṟu avarkaḷukkuk kūṟappaṭum)"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "mūṉṟu kiḷaikaḷuṭaiya (narakap pukai) niḻaliṉ pāl naṭappīrkaḷāka"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "(atu) niḻalaḷippatumalla, (narakiṉ) kaṭuntaḻalai viṭṭuk kāppāṟṟuvatumalla"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "niccayamāka atu periya māḷikaikaḷaip pōṉṟa neruppup poṟikaḷaik koṇṭu vīci eṟintu koṇṭu irukkum"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "niccayamāka atu mañcaḷ niṟamuḷḷa oṭṭakaikaḷ pōl irukkum"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "poyppippavarkaḷukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "itu, avarkaḷ (etuvum) pēca muṭiyāta nāḷ"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "aṉṟiyum (tappuvippataṟkākap) pukaḻ kūṟavum avarkaḷ aṉumatikkappaṭamāṭṭārkaḷ"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "poypippavarkaḷukku annāḷil kēṭutāṉ"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "itu tīrppukkuriya nāḷākum. Uṅkaḷaiyum, (uṅkaḷukku) muṉ iruntōraiyum nām oṉṟu cērkkum (nāḷ)"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eṉavē, (taṇṭaṉaiyiliruntu tappittuk koḷḷa) uṅkaḷiṭam cūḻcciyirukkumāṉāl, cūḻcci ceytu pāruṅkaḷ"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "poyppipvarkaḷukku annāḷil kēṭutāṉ"
        }
    ]
}