{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "(napiyē!) Mikka mēlāṉavaṉāṉa um'muṭaiya iṟaivaṉiṉ tirunāmattai(t tiyāṉittu) taspīhu ceyvīrāka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "avaṉē (yāvaṟṟaiyum) paṭaittuc cevvaiyākkiṉāṉ"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "mēlum, avaṉē (avaṟṟukku vēṇṭiya aṉaittaiyum) aḷavupaṭa nirṇayittu (avaṟṟaip peṟuvataṟku) nērvaḻi kāṭṭiṉāṉ"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "aṉṟiyum avaṉē (kāl naṭaikaḷukkeṉa) mēyccalukkuriyavaṟṟaiyum veḷiyākkiṉāṉ"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "piṉṉar avaṟṟai ularnta kūḷaṅkaḷāka ākkiṉāṉ"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "(Napiyē!) Nām umakku ōtakkaṟṟuk koṭuppōm; ataṉāl nīr atai maṟakkamāṭṭīr"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāh nāṭiyatai allāmal - niccayamāka, avaṉ veḷippaṭaiyāṉataiyum maṟaintiruppataiyum aṟikiṟāṉ"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "aṉṟiyum, ilēcāṉa (mārkkat)tai nām umakku eḷitākkuvōm"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "ākavē, nallupatēcam payaṉaḷikkumāyiṉ, nīr upatēcam ceyvīrāka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(allāhvukku) añcupavaṉ viraivil upatēcattai ēṟpāṉ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "āṉāl turpākkiyamuṭaiyavaṉō, atai viṭṭu vilakik koḷvāṉ"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "avaṉ tāṉ perum neruppil pukuvāṉ"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "piṉṉar, atil avaṉ marikkavum māṭṭāṉ; vāḻavum māṭṭāṉ"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tūymaiyaṭaintavaṉ, tiṭṭamāka veṟṟi peṟukiṟāṉ"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "mēlum, avaṉ taṉ iṟaivaṉuṭaiya nāmattait tutittuk koṇṭum, toḻutu koṇṭum iruppāṉ"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "eṉiṉum, nīṅkaḷō (maṟumaiyai viṭṭu viṭṭu) ivvulaka vāḻvait tērnteṭuttuk koḷkiṟīrkaḷ"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "āṉāl maṟumai (vāḻkkai)yō ciṟantatākum; eṉṟum nilaittiruppatum ākum"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "nicyacamāka itu muntiya ākamaṅkaḷilum"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ipṟāhīm, mūsāviṉuṭaiya ākamaṅkaḷilum (ivvāṟē aṟivippu) irukkiṟatu"
        }
    ]
}