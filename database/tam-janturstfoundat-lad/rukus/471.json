{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "naṭcattira maṇṭalaṅkaḷiṉ mītu nāṉ cattiyam ceykiṟēṉ"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "nīṅkaḷ aṟīvīrkaḷāyiṉ niccayamāka itu makattāṉ piramāṇamākum"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "nīccayamāka, itu mikavum kaṇṇiyamum caṅkaiyum mikka kur'āṉ ākum"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "pātukākkappaṭṭa ēṭṭil irukkiṟatu"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "tūymaiyāṉavarkaḷait tavira (vēṟevarum) itaṉait toṭa māṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "akilattāriṉ iṟaivaṉāl itu iṟakkiyaruḷappaṭṭatu"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "avvāṟiruntum, (kur'āṉiṉ makattāṉa) icceyti paṟṟi nīṅkaḷ alaṭciyamāka irukkiṟīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "nīṅkaḷ poyppippatai (iṟaivaṉ tanta) uṅkaḷ pākkiyaṅkaḷukku (naṉṟiyāka) ākkukiṉṟīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "maraṇat taṟuvāyil oruvaṉiṉ (uyir) toṇṭaik kuḻiyai aṭaiyum pōtu"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "annēram nīṅkaḷ pārttuk koṇṭirukkiṟīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "āyiṉum, nāmō avaṉukku uṅkaḷai viṭa camīpamāka irukkiṟōm. Eṉiṉum nīṅkaḷ pārkkiṟīrkaḷillai"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "eṉavē, (maṟumaiyil uṅkaḷ ceyalkaḷukku) kūli koṭukkappaṭa māṭṭīrkaḷ eṉṟu iruntāl"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "nīṅkaḷ uṇmaiyāḷarāka iruppiṉ, (avvuyirai) mīḷavaittirukkalāmē"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "(iṟantavar iṟaivaṉukku) nerukkamāṉavarkaḷil niṉṟum iruppārāyiṉ"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "avarukkuc cukamum, nalluṇavum iṉṉum pākkiyamuḷḷa cuvarkkamum uṇṭu"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Aṉṟiyum, avar valappuṟattut tōḻarāka iruntāl"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "valappuṟattōrē! Uṅkaḷukku\"salām\" uṇṭāvatāka\" (eṉṟu kūṟappaṭum)"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "āṉāl avaṉ vaḻikeṭṭup poyyākkuvōril (oruvaṉāka) iruntāl"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "kotikkum nīrē, avaṉukku viruntākum"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "naraka neruppil taḷḷappaṭuvatu (viruntākum)"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "niccayamāka itutāṉ uṟutiyāṉa uṇmaiyākum"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "eṉavē (napiyē!) Makattāṉa um'muṭaiya iṟaivaṉiṉ tirunāmattaik koṇṭu taspīhu ceyvīrāka"
        }
    ]
}