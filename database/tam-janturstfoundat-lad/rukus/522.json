{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "avar kaṭukaṭuttār, mēlum (mukattait) tiruppik koṇṭār"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "avariṭam anta antakar vantapōtu"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "(napiyē! Um'miṭam vanta avar) avar tūymaiyāki viṭakkūṭum eṉpatai nīr aṟivīrā"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "allatu avar (um upatēcattai) niṉaivu paṭuttikkoḷvataṉ mūlam, (um'muṭaiya) upatēcam avarukkup palaṉaḷittirukkalām"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "(um upatēcattiṉ) tēvaiyai evaṉ alaṭciyam ceykiṟāṉō"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "nīr avaṉpālē muṉṉōkkukiṉṟīr"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "āyiṉum (islāttai yēṟṟu) avaṉ tūymaiyaṭaiyāmal pōṉāl, um mītu (ataṉāl kuṟṟam) illai"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "āṉāl, evar um'miṭam viraintu vantārō"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "allāhvukku añciyavarāka"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "avarai viṭṭum parāmukamāy irukkiṉṟīr"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "avvāṟalla! Ēṉeṉil (ittiruk kur'āṉ niṉaivūṭṭum) nallupatēcamākum"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "eṉavē, evar virumpukiṟārō avar atai niṉaivu koḷvār"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(Atu) caṅkaiyākkappaṭṭa ēṭukaḷil irukkiṟatu"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "uyarvākkappaṭṭatu, paricuttamākkappaṭṭatu"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "(vāṉavarkaḷāṉa) eḻutupavarkaḷiṉ kaikaḷāl"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "(lavhul mahḥpūḷiliruntu eḻutiya avvāṉavarkaḷ) caṅkai mikkavarkaḷ; nallōrkaḷ"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "(naṉṟi keṭṭa maṉitaṉ) aḻivāṉāka! Evvaḷavu naṉṟi maṟantavaṉāka avaṉ irukkiṉṟāṉ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "epporuḷāl avaṉai (allāh) paṭaittāṉ? (Eṉpatai avaṉ cintittāṉā)"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "(oru tuḷi) intiriyattiliruntu avaṉaip paṭaittu, avaṉai (aḷavuppaṭi) cariyākkiṉāṉ"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "piṉ avaṉukkāka vaḻiyai eḷitākkiṉāṉ"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "piṉ avaṉai marikkac ceytu, avaṉai kapril' ākkukiṟāṉ"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "piṉṉar, avaṉ virumpumpōtu avaṉai (uyirppittu) eḻuppuvāṉ"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "(ivvāṟiruntum allāh maṉitaṉukku) etai ēviṉāṉō atai avaṉ niṟaivēṟṟuvatillai"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "eṉavē, maṉitaṉ taṉ uṇaviṉ pakkamē (atu evvāṟu peṟappaṭukiṟatu) eṉpatai nōṭṭamiṭṭup pārkkaṭṭum"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "niccayamāka nāmē maḻaiyai naṉku poḻiyac ceykiṟōm"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "piṉ, pūmiyaip piḷappatākap piḷantu"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "piṉ atiliruntu vittai muḷaippikkiṟōm"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "tirāṭcaikaḷaiyum, puṟpūṇṭukaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "oliva marattaiyum, pērīccaiyaiyum"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "aṭarnta tōṭṭaṅkaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "paḻaṅkaḷaiyum, tīvaṉaṅkaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(ivaiyellām) uṅkaḷukkum, uṅkaḷ kāl naṭaikaḷukkum payaṉaḷippataṟkāka"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "ākavē, (yuka muṭiviṉ pōtu kātaic ceviṭākkum peruñ captam varum pōtu)"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "anta nāḷil maṉitaṉ viraṇṭu ōṭuvāṉ - taṉ cakōtaraṉai viṭṭum"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "taṉ tāyai viṭṭum, taṉ tantaiyai viṭṭum"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "taṉ maṉaiviyai viṭṭum, taṉ makkaḷai viṭṭum"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "aṉṟu ovvoru maṉitaṉukkum avaṉavaṉ (avala) nilaiyē pōtumāṉatāyirukkum"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "annāḷil cila mukaṅkaḷ ilaṅkik koṇṭirukkum"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "cirittavaiyākavum, makiḻvuṭaiyatākavum irukkum"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Āṉāl annāḷil - (vēṟu) cila mukaṅkaḷ, avaṟṟiṉ mītu puḻuti paṭintirukkum"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "avaṟṟaik karumai iruḷ mūṭiyirukkum"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "avarkaḷtām, nirākarittavarkaḷa,; tīyavarkaḷ"
        }
    ]
}