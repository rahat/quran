{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "māperum nikaḻcci(yāṉa iṟutināḷ) ēṟpaṭṭāl"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "annikaḻcciyaip poyyākkuvatu etuvumillai"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "atu (tīyōrait) tāḻtti viṭum, (nallōrai) uyartti viṭum"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "pūmi naṭukkattāl naṭukkamaṭaiyac ceyyum pōtu"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "iṉṉum malaikaḷ tūḷ tūḷāka ākkappaṭum pōtu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "piṉṉar, atu parappappaṭṭa puḻuti ākiviṭum"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "(appōtu) nīṅkaḷum mūṉṟu piriviṉarkaḷāki viṭuvīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "(mutalāmavar) valatu pāricattiluḷḷōr - valatu pāricattukkārar yār? (Eṉpatai aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "(iraṇṭāmavar) iṭatu pāricattiluḷḷōr - iṭatu pāricattiluḷḷōr yār? (Eṉa aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(mūṉṟāmavar nampikkaiyil) muntiyavarkaḷ (maṟumaiyilum) muntiyavarkaḷē yāvārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "ivarkaḷ (iṟaivaṉukku) aṇmaiyilākkappaṭṭavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "ivarkaḷ pākkiyaṅkaḷuḷḷa (cuvaṉac) cōlaikaḷil iruppar"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "mutalāmavaril oru peruṅ kūṭṭattiṉarum"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "piṉṉavarkaḷil, oru coṟpattokaiyiṉarum"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(poṉṉiḻaikaḷāl) ākkap peṟṟa kaṭṭilkaḷiṉ mītu"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "oruvaraiyoruvar muṉṉōkkiyavākaḷāka, avaṟṟiṉ mītu cāyntiruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "nilaiyāṉa iḷamaiyuṭaiya iḷaiñarkaḷ (ivarkaḷ paṇikkākac) cuṟṟik koṇṭē iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "teḷinta pāṉaṅkaḷāl niṟampiya kiṇṇaṅkaḷaiyum, keṇṭikaḷaiyum, kuvaḷaikaḷaiyum koṇṭu (avarkaḷiṭam cuṟṟi varuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(appāṉaṅkaḷaip parukum) avarkaḷ avaṟṟiṉāl talai nōykkāḷāka māṭṭārkaḷ, matimayaṅkavumāṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "iṉṉum avarkaḷ terinteṭukkum kaṉi vakaikaḷaiyum"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "virumpum paṭcikaḷiṉ māmicattaiyum (koṇṭu avviḷaiñarkaḷ varuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "(aṅku ivarkaḷukku) hūrul īṉ (eṉṉum neṭiya kaṇkaḷuṭaiya) kaṉṉiyar iruppar"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "maṟaikkappaṭṭa muttukkaḷaip pōl avarkaḷ (iruppārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "(Ivaiyāvum) cuvarkka vācikaḷ (im'maiyil ceytu koṇṭirunta) ceyalkaḷukku kūliyākum"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "aṅku ivarkaḷ vīṇāṉataiyum, pāvamuṇṭākkuvataiyum (koṇṭa pēccukaḷaic) ceviyuṟa māṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "salām, salām' eṉṉum collaiyē (ceviyuṟuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "iṉṉum valappuṟattārkaḷ - valappuṟattārkaḷ yār? (Eṉpatai aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(avarkaḷ) muḷḷillāta ilantai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "(nuṉi mutal aṭivarai) kulai kulaiyākap paḻaṅkaḷuṭai vāḻai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "iṉṉum, nīṇṭa niḻalilum"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "(catā) olittōṭik koṇṭirukkum nīriṉ arukilum"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "ērāḷamāṉa kaṉivakaikaḷiṉ mattiyilum"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "avai aṟṟup pōkātavai, (uṇṇat) taṭukkappaṭātavai"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "mēlum, uṉṉatamāṉa virippukaḷil (amarntiruppar)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "niccayamāka (hūrul īṉ eṉṉum peṇkaḷaip) putiya paṭaippāka, nām uṇṭākki"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "appeṇkaḷaik kaṉṉikaḷākavum"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "(tam tuṇaivar mītu) pācamuṭaiyōrākavum, cama vayatiṉarākavum"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "valappuṟattōrukkāka (ākki vaittuḷḷōm)"
        }
    ]
}