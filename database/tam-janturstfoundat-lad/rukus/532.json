{
    "rukus": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Innakarattiṉ mītu nāṉ cattiyam ceykiṉṟēṉ"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "nīr innakarattil (cutantiramākat) taṅkiyirukkum nilaiyil"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "peṟṟōr mītum, (peṟṟa) cantatiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "tiṭamāka, nām maṉitaṉaik kaṣṭattil (uḷḷavaṉākap) paṭaittōm"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "oruvarum, taṉ mītu cakti peṟavē māṭṭār' eṉṟu avaṉ eṇṇik koḷkiṟāṉā"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "ērāḷamāṉa poruḷai nāṉ aḻittēṉ\" eṉṟu avaṉ kūṟukiṟāṉ"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "taṉṉai oruvarum pārkkavillaiyeṉṟu avaṉ eṇṇukiṟāṉā"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "avaṉukku nām iraṇṭu kaṇkaḷai nām ākkavillaiyā"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "mēlum nāvaiyum, iraṇṭu utaṭukaḷaiyum (ākkavillaiyā)"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "aṉṟiyum (naṉmai, tīmaiyākiya) irupātaikaḷai nām avaṉukkuk kāṇpittōm"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "āyiṉum, avaṉ kaṇavāyaik kaṭakkavillai"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "(napiyē!) Kaṇavāy eṉpatu eṉṉa eṉpatai umakku etu aṟivikkum"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "(atu) ōr aṭimaiyai viṭuvittal"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "allatu, pacittirukkum nāḷil uṇavaḷittalākum"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "uṟaviṉaṉāṉa ōr anātaikkō"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "allatu (vaṟumai) maṇṇil puraḷum ōr ēḻaikkō (uṇavaḷippatākum)"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "piṉṉar, īmāṉ koṇṭu, poṟumaiyaik koṇṭu oruvarukkoruvar upatēcittum, kirupaiyaik koṇṭu oruvaruk koruvar upatēcittum vantavarkaḷil iruppatuvum (kaṇavāyaik kaṭattal) ākum"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "attakaiyavar tām valappuṟattil iruppavarkaḷ"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "āṉāl, evarkaḷ nam vacaṉaṅkaḷai nirākarikkiṟārkaḷō, avarkaḷ tām iṭappakkattaiyuṭaiyōr"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "avarkaḷ mītu (eppakkamum) mūṭappaṭṭa neruppu irukkiṟatu"
        }
    ]
}