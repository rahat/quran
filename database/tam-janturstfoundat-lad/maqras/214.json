{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "māperum nikaḻcci(yāṉa iṟutināḷ) ēṟpaṭṭāl"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "annikaḻcciyaip poyyākkuvatu etuvumillai"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "atu (tīyōrait) tāḻtti viṭum, (nallōrai) uyartti viṭum"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "pūmi naṭukkattāl naṭukkamaṭaiyac ceyyum pōtu"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "iṉṉum malaikaḷ tūḷ tūḷāka ākkappaṭum pōtu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "piṉṉar, atu parappappaṭṭa puḻuti ākiviṭum"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "(appōtu) nīṅkaḷum mūṉṟu piriviṉarkaḷāki viṭuvīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "(mutalāmavar) valatu pāricattiluḷḷōr - valatu pāricattukkārar yār? (Eṉpatai aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "(iraṇṭāmavar) iṭatu pāricattiluḷḷōr - iṭatu pāricattiluḷḷōr yār? (Eṉa aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(mūṉṟāmavar nampikkaiyil) muntiyavarkaḷ (maṟumaiyilum) muntiyavarkaḷē yāvārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "ivarkaḷ (iṟaivaṉukku) aṇmaiyilākkappaṭṭavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "ivarkaḷ pākkiyaṅkaḷuḷḷa (cuvaṉac) cōlaikaḷil iruppar"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "mutalāmavaril oru peruṅ kūṭṭattiṉarum"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "piṉṉavarkaḷil, oru coṟpattokaiyiṉarum"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(poṉṉiḻaikaḷāl) ākkap peṟṟa kaṭṭilkaḷiṉ mītu"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "oruvaraiyoruvar muṉṉōkkiyavākaḷāka, avaṟṟiṉ mītu cāyntiruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "nilaiyāṉa iḷamaiyuṭaiya iḷaiñarkaḷ (ivarkaḷ paṇikkākac) cuṟṟik koṇṭē iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "teḷinta pāṉaṅkaḷāl niṟampiya kiṇṇaṅkaḷaiyum, keṇṭikaḷaiyum, kuvaḷaikaḷaiyum koṇṭu (avarkaḷiṭam cuṟṟi varuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(appāṉaṅkaḷaip parukum) avarkaḷ avaṟṟiṉāl talai nōykkāḷāka māṭṭārkaḷ, matimayaṅkavumāṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "iṉṉum avarkaḷ terinteṭukkum kaṉi vakaikaḷaiyum"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "virumpum paṭcikaḷiṉ māmicattaiyum (koṇṭu avviḷaiñarkaḷ varuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "(aṅku ivarkaḷukku) hūrul īṉ (eṉṉum neṭiya kaṇkaḷuṭaiya) kaṉṉiyar iruppar"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "maṟaikkappaṭṭa muttukkaḷaip pōl avarkaḷ (iruppārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "(Ivaiyāvum) cuvarkka vācikaḷ (im'maiyil ceytu koṇṭirunta) ceyalkaḷukku kūliyākum"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "aṅku ivarkaḷ vīṇāṉataiyum, pāvamuṇṭākkuvataiyum (koṇṭa pēccukaḷaic) ceviyuṟa māṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "salām, salām' eṉṉum collaiyē (ceviyuṟuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "iṉṉum valappuṟattārkaḷ - valappuṟattārkaḷ yār? (Eṉpatai aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(avarkaḷ) muḷḷillāta ilantai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "(nuṉi mutal aṭivarai) kulai kulaiyākap paḻaṅkaḷuṭai vāḻai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "iṉṉum, nīṇṭa niḻalilum"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "(catā) olittōṭik koṇṭirukkum nīriṉ arukilum"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "ērāḷamāṉa kaṉivakaikaḷiṉ mattiyilum"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "avai aṟṟup pōkātavai, (uṇṇat) taṭukkappaṭātavai"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "mēlum, uṉṉatamāṉa virippukaḷil (amarntiruppar)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "niccayamāka (hūrul īṉ eṉṉum peṇkaḷaip) putiya paṭaippāka, nām uṇṭākki"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "appeṇkaḷaik kaṉṉikaḷākavum"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "(tam tuṇaivar mītu) pācamuṭaiyōrākavum, cama vayatiṉarākavum"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "valappuṟattōrukkāka (ākki vaittuḷḷōm)"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "muṉṉuḷḷōril oru kūṭṭamum"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "piṉṉuḷḷōril oru kūṭṭamum (valappuṟattōrāka iruppārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "iṭatu pāricattiluḷḷavarkaḷō iṭatu pāricattiluḷḷavarkaḷ yār? (Eṉṟu aṟivīrkaḷā)"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "(avarkaḷ) koṭiya aṉal kāṟṟilum, kotikkum nīrilum"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "aṭarntu iruṇṭa pukaiyiṉ niḻalilum iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "(aṅku) kuḷircciyumillai, nalamumillai"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "niccayamāka avarkaḷ itaṟku muṉṉar (ulakattil) cukapōkikaḷāka iruntaṉar"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "āṉāl, avarkaḷ perum pāvattiṉ mītu nilaittum iruntaṉar"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "mēlum, avarkaḷ, \"nām marittu maṇṇākavum, elumpukaḷākavum āki viṭṭālum, nām mīṇṭum niccayamāka eḻuppappaṭuvōmā?\" Eṉṟu kēṭṭuk koṇṭu iruntaṉar"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "allatu, muṉṉōrkaḷāṉa nam tantaiyarumā? (Eḻuppappaṭuvar?\" Eṉṟum kūṟiṉar)"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "(Napiyē!) Nīr kūṟum: \"(Niccayamāka uṅkaḷil) muṉṉōrkaḷum, piṉṉōrkaḷum"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "kuṟippiṭṭa nāḷiṉ oru nērattil (nīṅkaḷ yāvarum) oṉṟu kūṭṭappaṭuvīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "ataṟkup piṉṉar: \"Poyyarkaḷākiya vaḻi kēṭarkaḷē! Niccayamāka nīṅkaḷ"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "jakkūm (eṉṉum kaḷḷi) marattiliruntē nīṅkaḷ pucippavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "ākavē, \"ataik koṇṭē vayiṟukaḷai nirappuvīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "appuṟam ataṉmēl kotikkum nīraiyē kuṭippīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "piṉṉum hīm - tākamuḷḷa oṭṭakai kuṭippataip pōl kuṭippīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "itutāṉ niyāyat tīrppu nāḷil avarkaḷukku viruntākum"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "nāmē uṅkaḷaip paṭaittōm. Eṉavē, (nām kūṟuvatai) nīṅkaḷ uṇmaiyeṉṟu nampa vēṇṭāmā"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "(karppap paiyil) nīṅkaḷ celuttum intiriyattaik kavaṉittīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "atai nīṅkaḷ paṭaikkiṟīrkaḷā? Allatu nām paṭaikkiṉṟōmā"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "uṅkaḷukkiṭaiyil maraṇattaiyum nāmē ēṟpaṭuttiyuḷḷōm, eṉavē nam'mai evarum mikaikka muṭiyātu"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "(aṉṟiyum uṅkaḷaip pōkki viṭṭu) uṅkaḷ pōṉṟōrai patilākak koṇṭu vantu nīṅkaḷ aṟiyāta uruvattil uṅkaḷai uṇṭākkavum (nām iyalātavarkaḷ alla)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "mutal muṟaiyāka (nām uṅkaḷaip) paṭaittatu paṟṟi niccayamāka nīṅkaḷ aṟivīrkaḷ - eṉavē (atiliruntu niṉaivu kūrntu) nīṅkaḷ uṇarvu peṟa vēṇṭāmā"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "(ippūmiyil) vitaippatai nīṅkaḷ kavaṉittīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "ataṉai nīṅkaḷ muḷaikkac ceykiṉṟīrkaḷā? Allatu nām muḷaikkac ceykiṉṟōmā"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "nām nāṭiṉāl tiṭṭamāka ataṉaik kūḷamāy ākkiviṭuvōm - appāl nīṅkaḷ āccariyappaṭṭuk koṇṭu iruppīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "niccayamāka nām kaṭaṉ paṭṭavarkaḷāki viṭṭōm"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "mēlum, (payirkaḷiliruntu etuvum peṟa muṭiyātavarkaḷākat) taṭukkappaṭṭu viṭṭōm\" (eṉṟum kūṟik koṇṭiruppīrkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Aṉṟiyum, nīṅkaḷ kuṭikkum nīraik kavaṉittīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "mēkattiliruntu atai nīṅkaḷ iṟakkiṉīrkaḷā? Allatu nām iṟakkukiṟōmā"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "nām nāṭiṉāl, ataik kaippuḷḷa tākkiyiruppōm; (ivaṟṟukkellām) nīṅkaḷ naṉṟi celutta vēṇṭāmā"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "nīṅkaḷ mūṭṭum neruppai kavaṉittīrkaḷā"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "ataṉ marattai nīṅkaḷ uṇṭākkiṉīrkaḷā? Allatu nām uṇṭu paṇṇukiṟōmā"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "nām ataṉai niṉaivūṭṭuvatākavum, payaṇikaḷukku payaṉaḷikkappataṟkākavum uṇṭākkiṉōm"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "ākavē, makattāṉa um'muṭaiya rappiṉ tirunāmattaik koṇṭu taspīhu ceyvīrāka"
        }
    ]
}