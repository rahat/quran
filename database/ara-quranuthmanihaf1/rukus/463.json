{
    "rukus": [
        {
            "chapter": 54,
            "verse": 1,
            "text": "اقتربت الساعة وانشق القمر"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "وان يروا ءاية يعرضوا ويقولوا سحر مستمر"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "وكذبوا واتبعوا اهواءهم وكل امر مستقر"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "ولقد جاءهم من الانباء ما فيه مزدجر"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حكمة بلغة فما تغن النذر"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "فتول عنهم يوم يدع الداع الى شيء نكر"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "خشعا ابصرهم يخرجون من الاجداث كانهم جراد منتشر"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "مهطعين الى الداع يقول الكفرون هذا يوم عسر"
        },
        {
            "chapter": 54,
            "verse": 9,
            "text": "۞كذبت قبلهم قوم نوح فكذبوا عبدنا وقالوا مجنون وازدجر"
        },
        {
            "chapter": 54,
            "verse": 10,
            "text": "فدعا ربه اني مغلوب فانتصر"
        },
        {
            "chapter": 54,
            "verse": 11,
            "text": "ففتحنا ابوب السماء بماء منهمر"
        },
        {
            "chapter": 54,
            "verse": 12,
            "text": "وفجرنا الارض عيون ا فالتقى الماء على امر قد قدر"
        },
        {
            "chapter": 54,
            "verse": 13,
            "text": "وحملنه على ذات الوح ودسر"
        },
        {
            "chapter": 54,
            "verse": 14,
            "text": "تجري باعيننا جزاء لمن كان كفر"
        },
        {
            "chapter": 54,
            "verse": 15,
            "text": "ولقد تركنها ءاية فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 16,
            "text": "فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 17,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 18,
            "text": "كذبت عاد فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 19,
            "text": "انا ارسلنا عليهم ريح ا صرصر ا في يوم نحس مستمر"
        },
        {
            "chapter": 54,
            "verse": 20,
            "text": "تنزع الناس كانهم اعجاز نخل منقعر"
        },
        {
            "chapter": 54,
            "verse": 21,
            "text": "فكيف كان عذابي ونذر"
        },
        {
            "chapter": 54,
            "verse": 22,
            "text": "ولقد يسرنا القرءان للذكر فهل من مدكر"
        }
    ]
}