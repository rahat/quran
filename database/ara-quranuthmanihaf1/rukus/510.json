{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "يايها المدثر"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "قم فانذر"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "وربك فكبر"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "وثيابك فطهر"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "والرجز فاهجر"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "ولا تمنن تستكثر"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "ولربك فاصبر"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "فاذا نقر في الناقور"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "فذلك يوميذ يوم عسير"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "على الكفرين غير يسير"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "ذرني ومن خلقت وحيد ا"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "وجعلت له مال ا ممدود ا"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "وبنين شهود ا"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "ومهدت له تمهيد ا"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "ثم يطمع ان ازيد"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "كلا انه كان لايتنا عنيد ا"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "سارهقه صعودا"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "انه فكر وقدر"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "فقتل كيف قدر"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "ثم قتل كيف قدر"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "ثم نظر"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "ثم عبس وبسر"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "ثم ادبر واستكبر"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "فقال ان هذا الا سحر يوثر"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "ان هذا الا قول البشر"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "ساصليه سقر"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "وما ادرىك ما سقر"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "لا تبقي ولا تذر"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "لواحة للبشر"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "عليها تسعة عشر"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "وما جعلنا اصحب النار الا مليكة وما جعلنا عدتهم الا فتنة للذين كفروا ليستيقن الذين اوتوا الكتب ويزداد الذين ءامنوا ايمن ا ولا يرتاب الذين اوتوا الكتب والمومنون وليقول الذين في قلوبهم مرض والكفرون ماذا اراد الله بهذا مثل ا كذلك يضل الله من يشاء ويهدي من يشاء وما يعلم جنود ربك الا هو وما هي الا ذكرى للبشر"
        }
    ]
}