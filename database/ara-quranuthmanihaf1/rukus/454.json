{
    "rukus": [
        {
            "chapter": 50,
            "verse": 30,
            "text": "يوم نقول لجهنم هل امتلات وتقول هل من مزيد"
        },
        {
            "chapter": 50,
            "verse": 31,
            "text": "وازلفت الجنة للمتقين غير بعيد"
        },
        {
            "chapter": 50,
            "verse": 32,
            "text": "هذا ما توعدون لكل اواب حفيظ"
        },
        {
            "chapter": 50,
            "verse": 33,
            "text": "من خشي الرحمن بالغيب وجاء بقلب منيب"
        },
        {
            "chapter": 50,
            "verse": 34,
            "text": "ادخلوها بسلم ذلك يوم الخلود"
        },
        {
            "chapter": 50,
            "verse": 35,
            "text": "لهم ما يشاءون فيها ولدينا مزيد"
        },
        {
            "chapter": 50,
            "verse": 36,
            "text": "وكم اهلكنا قبلهم من قرن هم اشد منهم بطش ا فنقبوا في البلد هل من محيص"
        },
        {
            "chapter": 50,
            "verse": 37,
            "text": "ان في ذلك لذكرى لمن كان له قلب او القى السمع وهو شهيد"
        },
        {
            "chapter": 50,
            "verse": 38,
            "text": "ولقد خلقنا السموت والارض وما بينهما في ستة ايام وما مسنا من لغوب"
        },
        {
            "chapter": 50,
            "verse": 39,
            "text": "فاصبر على ما يقولون وسبح بحمد ربك قبل طلوع الشمس وقبل الغروب"
        },
        {
            "chapter": 50,
            "verse": 40,
            "text": "ومن اليل فسبحه وادبر السجود"
        },
        {
            "chapter": 50,
            "verse": 41,
            "text": "واستمع يوم يناد المناد من مكان قريب"
        },
        {
            "chapter": 50,
            "verse": 42,
            "text": "يوم يسمعون الصيحة بالحق ذلك يوم الخروج"
        },
        {
            "chapter": 50,
            "verse": 43,
            "text": "انا نحن نحي ونميت والينا المصير"
        },
        {
            "chapter": 50,
            "verse": 44,
            "text": "يوم تشقق الارض عنهم سراع ا ذلك حشر علينا يسير"
        },
        {
            "chapter": 50,
            "verse": 45,
            "text": "نحن اعلم بما يقولون وما انت عليهم بجبار فذكر بالقرءان من يخاف وعيد"
        }
    ]
}