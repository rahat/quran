{
    "rukus": [
        {
            "chapter": 15,
            "verse": 1,
            "text": "الر تلك ءايت الكتب وقرءان مبين"
        },
        {
            "chapter": 15,
            "verse": 2,
            "text": "ربما يود الذين كفروا لو كانوا مسلمين"
        },
        {
            "chapter": 15,
            "verse": 3,
            "text": "ذرهم ياكلوا ويتمتعوا ويلههم الامل فسوف يعلمون"
        },
        {
            "chapter": 15,
            "verse": 4,
            "text": "وما اهلكنا من قرية الا ولها كتاب معلوم"
        },
        {
            "chapter": 15,
            "verse": 5,
            "text": "ما تسبق من امة اجلها وما يستخرون"
        },
        {
            "chapter": 15,
            "verse": 6,
            "text": "وقالوا يايها الذي نزل عليه الذكر انك لمجنون"
        },
        {
            "chapter": 15,
            "verse": 7,
            "text": "لوما تاتينا بالمليكة ان كنت من الصدقين"
        },
        {
            "chapter": 15,
            "verse": 8,
            "text": "ما ننزل المليكة الا بالحق وما كانوا اذ ا منظرين"
        },
        {
            "chapter": 15,
            "verse": 9,
            "text": "انا نحن نزلنا الذكر وانا له لحفظون"
        },
        {
            "chapter": 15,
            "verse": 10,
            "text": "ولقد ارسلنا من قبلك في شيع الاولين"
        },
        {
            "chapter": 15,
            "verse": 11,
            "text": "وما ياتيهم من رسول الا كانوا به يستهزءون"
        },
        {
            "chapter": 15,
            "verse": 12,
            "text": "كذلك نسلكه في قلوب المجرمين"
        },
        {
            "chapter": 15,
            "verse": 13,
            "text": "لا يومنون به وقد خلت سنة الاولين"
        },
        {
            "chapter": 15,
            "verse": 14,
            "text": "ولو فتحنا عليهم باب ا من السماء فظلوا فيه يعرجون"
        },
        {
            "chapter": 15,
            "verse": 15,
            "text": "لقالوا انما سكرت ابصرنا بل نحن قوم مسحورون"
        }
    ]
}