{
    "maqras": [
        {
            "chapter": 70,
            "verse": 19,
            "text": "۞ان الانسن خلق هلوعا"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "اذا مسه الشر جزوع ا"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "واذا مسه الخير منوعا"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "الا المصلين"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "الذين هم على صلاتهم دايمون"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "والذين في امولهم حق معلوم"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "للسايل والمحروم"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "والذين يصدقون بيوم الدين"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "والذين هم من عذاب ربهم مشفقون"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "ان عذاب ربهم غير مامون"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "والذين هم لفروجهم حفظون"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "الا على ازوجهم او ما ملكت ايمنهم فانهم غير ملومين"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "فمن ابتغى وراء ذلك فاوليك هم العادون"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "والذين هم لامنتهم وعهدهم رعون"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "والذين هم بشهدتهم قايمون"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "والذين هم على صلاتهم يحافظون"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "اوليك في جنت مكرمون"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "فمال الذين كفروا قبلك مهطعين"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "عن اليمين وعن الشمال عزين"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "ايطمع كل امري منهم ان يدخل جنة نعيم"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "كلا انا خلقنهم مما يعلمون"
        },
        {
            "chapter": 70,
            "verse": 40,
            "text": "فلا اقسم برب المشرق والمغرب انا لقدرون"
        },
        {
            "chapter": 70,
            "verse": 41,
            "text": "على ان نبدل خير ا منهم وما نحن بمسبوقين"
        },
        {
            "chapter": 70,
            "verse": 42,
            "text": "فذرهم يخوضوا ويلعبوا حتى يلقوا يومهم الذي يوعدون"
        },
        {
            "chapter": 70,
            "verse": 43,
            "text": "يوم يخرجون من الاجداث سراع ا كانهم الى نصب يوفضون"
        },
        {
            "chapter": 70,
            "verse": 44,
            "text": "خشعة ابصرهم ترهقهم ذلة ذلك اليوم الذي كانوا يوعدون"
        },
        {
            "chapter": 71,
            "verse": 1,
            "text": "انا ارسلنا نوحا الى قومه ان انذر قومك من قبل ان ياتيهم عذاب اليم"
        },
        {
            "chapter": 71,
            "verse": 2,
            "text": "قال يقوم اني لكم نذير مبين"
        },
        {
            "chapter": 71,
            "verse": 3,
            "text": "ان اعبدوا الله واتقوه واطيعون"
        },
        {
            "chapter": 71,
            "verse": 4,
            "text": "يغفر لكم من ذنوبكم ويوخركم الى اجل مسمى ان اجل الله اذا جاء لا يوخر لو كنتم تعلمون"
        },
        {
            "chapter": 71,
            "verse": 5,
            "text": "قال رب اني دعوت قومي ليل ا ونهار ا"
        },
        {
            "chapter": 71,
            "verse": 6,
            "text": "فلم يزدهم دعاءي الا فرار ا"
        },
        {
            "chapter": 71,
            "verse": 7,
            "text": "واني كلما دعوتهم لتغفر لهم جعلوا اصبعهم في ءاذانهم واستغشوا ثيابهم واصروا واستكبروا استكبار ا"
        },
        {
            "chapter": 71,
            "verse": 8,
            "text": "ثم اني دعوتهم جهار ا"
        },
        {
            "chapter": 71,
            "verse": 9,
            "text": "ثم اني اعلنت لهم واسررت لهم اسرار ا"
        },
        {
            "chapter": 71,
            "verse": 10,
            "text": "فقلت استغفروا ربكم انه كان غفار ا"
        },
        {
            "chapter": 71,
            "verse": 11,
            "text": "يرسل السماء عليكم مدرار ا"
        },
        {
            "chapter": 71,
            "verse": 12,
            "text": "ويمددكم بامول وبنين ويجعل لكم جنت ويجعل لكم انهر ا"
        },
        {
            "chapter": 71,
            "verse": 13,
            "text": "ما لكم لا ترجون لله وقار ا"
        },
        {
            "chapter": 71,
            "verse": 14,
            "text": "وقد خلقكم اطوارا"
        },
        {
            "chapter": 71,
            "verse": 15,
            "text": "الم تروا كيف خلق الله سبع سموت طباق ا"
        },
        {
            "chapter": 71,
            "verse": 16,
            "text": "وجعل القمر فيهن نور ا وجعل الشمس سراج ا"
        },
        {
            "chapter": 71,
            "verse": 17,
            "text": "والله انبتكم من الارض نبات ا"
        },
        {
            "chapter": 71,
            "verse": 18,
            "text": "ثم يعيدكم فيها ويخرجكم اخراج ا"
        },
        {
            "chapter": 71,
            "verse": 19,
            "text": "والله جعل لكم الارض بساط ا"
        },
        {
            "chapter": 71,
            "verse": 20,
            "text": "لتسلكوا منها سبل ا فجاج ا"
        },
        {
            "chapter": 71,
            "verse": 21,
            "text": "قال نوح رب انهم عصوني واتبعوا من لم يزده ماله وولده الا خسار ا"
        },
        {
            "chapter": 71,
            "verse": 22,
            "text": "ومكروا مكر ا كبار ا"
        },
        {
            "chapter": 71,
            "verse": 23,
            "text": "وقالوا لا تذرن ءالهتكم ولا تذرن ود ا ولا سواع ا ولا يغوث ويعوق ونسر ا"
        },
        {
            "chapter": 71,
            "verse": 24,
            "text": "وقد اضلوا كثير ا ولا تزد الظلمين الا ضلل ا"
        },
        {
            "chapter": 71,
            "verse": 25,
            "text": "مما خطيتهم اغرقوا فادخلوا نار ا فلم يجدوا لهم من دون الله انصار ا"
        },
        {
            "chapter": 71,
            "verse": 26,
            "text": "وقال نوح رب لا تذر على الارض من الكفرين ديارا"
        },
        {
            "chapter": 71,
            "verse": 27,
            "text": "انك ان تذرهم يضلوا عبادك ولا يلدوا الا فاجر ا كفار ا"
        },
        {
            "chapter": 71,
            "verse": 28,
            "text": "رب اغفر لي ولولدي ولمن دخل بيتي مومن ا وللمومنين والمومنت ولا تزد الظلمين الا تبارا"
        }
    ]
}