{
    "maqras": [
        {
            "chapter": 50,
            "verse": 27,
            "text": "۞قال قرينه ربنا ما اطغيته ولكن كان في ضلل بعيد"
        },
        {
            "chapter": 50,
            "verse": 28,
            "text": "قال لا تختصموا لدي وقد قدمت اليكم بالوعيد"
        },
        {
            "chapter": 50,
            "verse": 29,
            "text": "ما يبدل القول لدي وما انا بظلم للعبيد"
        },
        {
            "chapter": 50,
            "verse": 30,
            "text": "يوم نقول لجهنم هل امتلات وتقول هل من مزيد"
        },
        {
            "chapter": 50,
            "verse": 31,
            "text": "وازلفت الجنة للمتقين غير بعيد"
        },
        {
            "chapter": 50,
            "verse": 32,
            "text": "هذا ما توعدون لكل اواب حفيظ"
        },
        {
            "chapter": 50,
            "verse": 33,
            "text": "من خشي الرحمن بالغيب وجاء بقلب منيب"
        },
        {
            "chapter": 50,
            "verse": 34,
            "text": "ادخلوها بسلم ذلك يوم الخلود"
        },
        {
            "chapter": 50,
            "verse": 35,
            "text": "لهم ما يشاءون فيها ولدينا مزيد"
        },
        {
            "chapter": 50,
            "verse": 36,
            "text": "وكم اهلكنا قبلهم من قرن هم اشد منهم بطش ا فنقبوا في البلد هل من محيص"
        },
        {
            "chapter": 50,
            "verse": 37,
            "text": "ان في ذلك لذكرى لمن كان له قلب او القى السمع وهو شهيد"
        },
        {
            "chapter": 50,
            "verse": 38,
            "text": "ولقد خلقنا السموت والارض وما بينهما في ستة ايام وما مسنا من لغوب"
        },
        {
            "chapter": 50,
            "verse": 39,
            "text": "فاصبر على ما يقولون وسبح بحمد ربك قبل طلوع الشمس وقبل الغروب"
        },
        {
            "chapter": 50,
            "verse": 40,
            "text": "ومن اليل فسبحه وادبر السجود"
        },
        {
            "chapter": 50,
            "verse": 41,
            "text": "واستمع يوم يناد المناد من مكان قريب"
        },
        {
            "chapter": 50,
            "verse": 42,
            "text": "يوم يسمعون الصيحة بالحق ذلك يوم الخروج"
        },
        {
            "chapter": 50,
            "verse": 43,
            "text": "انا نحن نحي ونميت والينا المصير"
        },
        {
            "chapter": 50,
            "verse": 44,
            "text": "يوم تشقق الارض عنهم سراع ا ذلك حشر علينا يسير"
        },
        {
            "chapter": 50,
            "verse": 45,
            "text": "نحن اعلم بما يقولون وما انت عليهم بجبار فذكر بالقرءان من يخاف وعيد"
        },
        {
            "chapter": 51,
            "verse": 1,
            "text": "والذريت ذرو ا"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "فالحملت وقر ا"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "فالجريت يسر ا"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "فالمقسمت امرا"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "انما توعدون لصادق"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "وان الدين لوقع"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "والسماء ذات الحبك"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "انكم لفي قول مختلف"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "يوفك عنه من افك"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "قتل الخرصون"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "الذين هم في غمرة ساهون"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "يسلون ايان يوم الدين"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "يوم هم على النار يفتنون"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ذوقوا فتنتكم هذا الذي كنتم به تستعجلون"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "ان المتقين في جنت وعيون"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "ءاخذين ما ءاتىهم ربهم انهم كانوا قبل ذلك محسنين"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "كانوا قليل ا من اليل ما يهجعون"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "وبالاسحار هم يستغفرون"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "وفي امولهم حق للسايل والمحروم"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "وفي الارض ءايت للموقنين"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "وفي انفسكم افلا تبصرون"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "وفي السماء رزقكم وما توعدون"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "فورب السماء والارض انه لحق مثل ما انكم تنطقون"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "هل اتىك حديث ضيف ابرهيم المكرمين"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "اذ دخلوا عليه فقالوا سلم ا قال سلم قوم منكرون"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "فراغ الى اهله فجاء بعجل سمين"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "فقربه اليهم قال الا تاكلون"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "فاوجس منهم خيفة قالوا لا تخف وبشروه بغلم عليم"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "فاقبلت امراته في صرة فصكت وجهها وقالت عجوز عقيم"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "قالوا كذلك قال ربك انه هو الحكيم العليم"
        }
    ]
}