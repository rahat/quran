{
    "maqras": [
        {
            "chapter": 15,
            "verse": 1,
            "text": "الر تلك ءايت الكتب وقرءان مبين"
        },
        {
            "chapter": 15,
            "verse": 2,
            "text": "ربما يود الذين كفروا لو كانوا مسلمين"
        },
        {
            "chapter": 15,
            "verse": 3,
            "text": "ذرهم ياكلوا ويتمتعوا ويلههم الامل فسوف يعلمون"
        },
        {
            "chapter": 15,
            "verse": 4,
            "text": "وما اهلكنا من قرية الا ولها كتاب معلوم"
        },
        {
            "chapter": 15,
            "verse": 5,
            "text": "ما تسبق من امة اجلها وما يستخرون"
        },
        {
            "chapter": 15,
            "verse": 6,
            "text": "وقالوا يايها الذي نزل عليه الذكر انك لمجنون"
        },
        {
            "chapter": 15,
            "verse": 7,
            "text": "لوما تاتينا بالمليكة ان كنت من الصدقين"
        },
        {
            "chapter": 15,
            "verse": 8,
            "text": "ما ننزل المليكة الا بالحق وما كانوا اذ ا منظرين"
        },
        {
            "chapter": 15,
            "verse": 9,
            "text": "انا نحن نزلنا الذكر وانا له لحفظون"
        },
        {
            "chapter": 15,
            "verse": 10,
            "text": "ولقد ارسلنا من قبلك في شيع الاولين"
        },
        {
            "chapter": 15,
            "verse": 11,
            "text": "وما ياتيهم من رسول الا كانوا به يستهزءون"
        },
        {
            "chapter": 15,
            "verse": 12,
            "text": "كذلك نسلكه في قلوب المجرمين"
        },
        {
            "chapter": 15,
            "verse": 13,
            "text": "لا يومنون به وقد خلت سنة الاولين"
        },
        {
            "chapter": 15,
            "verse": 14,
            "text": "ولو فتحنا عليهم باب ا من السماء فظلوا فيه يعرجون"
        },
        {
            "chapter": 15,
            "verse": 15,
            "text": "لقالوا انما سكرت ابصرنا بل نحن قوم مسحورون"
        },
        {
            "chapter": 15,
            "verse": 16,
            "text": "ولقد جعلنا في السماء بروج ا وزينها للنظرين"
        },
        {
            "chapter": 15,
            "verse": 17,
            "text": "وحفظنها من كل شيطن رجيم"
        },
        {
            "chapter": 15,
            "verse": 18,
            "text": "الا من استرق السمع فاتبعه شهاب مبين"
        },
        {
            "chapter": 15,
            "verse": 19,
            "text": "والارض مددنها والقينا فيها روسي وانبتنا فيها من كل شيء موزون"
        },
        {
            "chapter": 15,
            "verse": 20,
            "text": "وجعلنا لكم فيها معيش ومن لستم له برزقين"
        },
        {
            "chapter": 15,
            "verse": 21,
            "text": "وان من شيء الا عندنا خزاينه وما ننزله الا بقدر معلوم"
        },
        {
            "chapter": 15,
            "verse": 22,
            "text": "وارسلنا الريح لوقح فانزلنا من السماء ماء فاسقينكموه وما انتم له بخزنين"
        },
        {
            "chapter": 15,
            "verse": 23,
            "text": "وانا لنحن نحي ونميت ونحن الورثون"
        },
        {
            "chapter": 15,
            "verse": 24,
            "text": "ولقد علمنا المستقدمين منكم ولقد علمنا المستخرين"
        },
        {
            "chapter": 15,
            "verse": 25,
            "text": "وان ربك هو يحشرهم انه حكيم عليم"
        },
        {
            "chapter": 15,
            "verse": 26,
            "text": "ولقد خلقنا الانسن من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 27,
            "text": "والجان خلقنه من قبل من نار السموم"
        },
        {
            "chapter": 15,
            "verse": 28,
            "text": "واذ قال ربك للمليكة اني خلق بشر ا من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 29,
            "text": "فاذا سويته ونفخت فيه من روحي فقعوا له سجدين"
        },
        {
            "chapter": 15,
            "verse": 30,
            "text": "فسجد المليكة كلهم اجمعون"
        },
        {
            "chapter": 15,
            "verse": 31,
            "text": "الا ابليس ابى ان يكون مع السجدين"
        },
        {
            "chapter": 15,
            "verse": 32,
            "text": "قال يابليس ما لك الا تكون مع السجدين"
        },
        {
            "chapter": 15,
            "verse": 33,
            "text": "قال لم اكن لاسجد لبشر خلقته من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 34,
            "text": "قال فاخرج منها فانك رجيم"
        },
        {
            "chapter": 15,
            "verse": 35,
            "text": "وان عليك اللعنة الى يوم الدين"
        },
        {
            "chapter": 15,
            "verse": 36,
            "text": "قال رب فانظرني الى يوم يبعثون"
        },
        {
            "chapter": 15,
            "verse": 37,
            "text": "قال فانك من المنظرين"
        },
        {
            "chapter": 15,
            "verse": 38,
            "text": "الى يوم الوقت المعلوم"
        },
        {
            "chapter": 15,
            "verse": 39,
            "text": "قال رب بما اغويتني لازينن لهم في الارض ولاغوينهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 40,
            "text": "الا عبادك منهم المخلصين"
        },
        {
            "chapter": 15,
            "verse": 41,
            "text": "قال هذا صرط علي مستقيم"
        },
        {
            "chapter": 15,
            "verse": 42,
            "text": "ان عبادي ليس لك عليهم سلطن الا من اتبعك من الغاوين"
        },
        {
            "chapter": 15,
            "verse": 43,
            "text": "وان جهنم لموعدهم اجمعين"
        },
        {
            "chapter": 15,
            "verse": 44,
            "text": "لها سبعة ابوب لكل باب منهم جزء مقسوم"
        },
        {
            "chapter": 15,
            "verse": 45,
            "text": "ان المتقين في جنت وعيون"
        },
        {
            "chapter": 15,
            "verse": 46,
            "text": "ادخلوها بسلم ءامنين"
        },
        {
            "chapter": 15,
            "verse": 47,
            "text": "ونزعنا ما في صدورهم من غل اخونا على سرر متقبلين"
        },
        {
            "chapter": 15,
            "verse": 48,
            "text": "لا يمسهم فيها نصب وما هم منها بمخرجين"
        },
        {
            "chapter": 15,
            "verse": 49,
            "text": "۞نبي عبادي اني انا الغفور الرحيم"
        }
    ]
}