{
    "pages": [
        {
            "chapter": 15,
            "verse": 16,
            "text": "ولقد جعلنا في السماء بروج ا وزينها للنظرين"
        },
        {
            "chapter": 15,
            "verse": 17,
            "text": "وحفظنها من كل شيطن رجيم"
        },
        {
            "chapter": 15,
            "verse": 18,
            "text": "الا من استرق السمع فاتبعه شهاب مبين"
        },
        {
            "chapter": 15,
            "verse": 19,
            "text": "والارض مددنها والقينا فيها روسي وانبتنا فيها من كل شيء موزون"
        },
        {
            "chapter": 15,
            "verse": 20,
            "text": "وجعلنا لكم فيها معيش ومن لستم له برزقين"
        },
        {
            "chapter": 15,
            "verse": 21,
            "text": "وان من شيء الا عندنا خزاينه وما ننزله الا بقدر معلوم"
        },
        {
            "chapter": 15,
            "verse": 22,
            "text": "وارسلنا الريح لوقح فانزلنا من السماء ماء فاسقينكموه وما انتم له بخزنين"
        },
        {
            "chapter": 15,
            "verse": 23,
            "text": "وانا لنحن نحي ونميت ونحن الورثون"
        },
        {
            "chapter": 15,
            "verse": 24,
            "text": "ولقد علمنا المستقدمين منكم ولقد علمنا المستخرين"
        },
        {
            "chapter": 15,
            "verse": 25,
            "text": "وان ربك هو يحشرهم انه حكيم عليم"
        },
        {
            "chapter": 15,
            "verse": 26,
            "text": "ولقد خلقنا الانسن من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 27,
            "text": "والجان خلقنه من قبل من نار السموم"
        },
        {
            "chapter": 15,
            "verse": 28,
            "text": "واذ قال ربك للمليكة اني خلق بشر ا من صلصل من حما مسنون"
        },
        {
            "chapter": 15,
            "verse": 29,
            "text": "فاذا سويته ونفخت فيه من روحي فقعوا له سجدين"
        },
        {
            "chapter": 15,
            "verse": 30,
            "text": "فسجد المليكة كلهم اجمعون"
        },
        {
            "chapter": 15,
            "verse": 31,
            "text": "الا ابليس ابى ان يكون مع السجدين"
        }
    ]
}