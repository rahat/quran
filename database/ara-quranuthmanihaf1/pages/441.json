{
    "pages": [
        {
            "chapter": 36,
            "verse": 13,
            "text": "واضرب لهم مثلا اصحب القرية اذ جاءها المرسلون"
        },
        {
            "chapter": 36,
            "verse": 14,
            "text": "اذ ارسلنا اليهم اثنين فكذبوهما فعززنا بثالث فقالوا انا اليكم مرسلون"
        },
        {
            "chapter": 36,
            "verse": 15,
            "text": "قالوا ما انتم الا بشر مثلنا وما انزل الرحمن من شيء ان انتم الا تكذبون"
        },
        {
            "chapter": 36,
            "verse": 16,
            "text": "قالوا ربنا يعلم انا اليكم لمرسلون"
        },
        {
            "chapter": 36,
            "verse": 17,
            "text": "وما علينا الا البلغ المبين"
        },
        {
            "chapter": 36,
            "verse": 18,
            "text": "قالوا انا تطيرنا بكم لين لم تنتهوا لنرجمنكم وليمسنكم منا عذاب اليم"
        },
        {
            "chapter": 36,
            "verse": 19,
            "text": "قالوا طيركم معكم اين ذكرتم بل انتم قوم مسرفون"
        },
        {
            "chapter": 36,
            "verse": 20,
            "text": "وجاء من اقصا المدينة رجل يسعى قال يقوم اتبعوا المرسلين"
        },
        {
            "chapter": 36,
            "verse": 21,
            "text": "اتبعوا من لا يسلكم اجر ا وهم مهتدون"
        },
        {
            "chapter": 36,
            "verse": 22,
            "text": "ومالي لا اعبد الذي فطرني واليه ترجعون"
        },
        {
            "chapter": 36,
            "verse": 23,
            "text": "ءاتخذ من دونه ءالهة ان يردن الرحمن بضر لا تغن عني شفعتهم شي ا ولا ينقذون"
        },
        {
            "chapter": 36,
            "verse": 24,
            "text": "اني اذ ا لفي ضلل مبين"
        },
        {
            "chapter": 36,
            "verse": 25,
            "text": "اني ءامنت بربكم فاسمعون"
        },
        {
            "chapter": 36,
            "verse": 26,
            "text": "قيل ادخل الجنة قال يليت قومي يعلمون"
        },
        {
            "chapter": 36,
            "verse": 27,
            "text": "بما غفر لي ربي وجعلني من المكرمين"
        }
    ]
}