{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "وما امرنا الا وحدة كلمح بالبصر"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "ولقد اهلكنا اشياعكم فهل من مدكر"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "وكل شيء فعلوه في الزبر"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "وكل صغير وكبير مستطر"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "ان المتقين في جنت ونهر"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "في مقعد صدق عند مليك مقتدر"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "الرحمن"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "علم القرءان"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "خلق الانسن"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "علمه البيان"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "الشمس والقمر بحسبان"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "والنجم والشجر يسجدان"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "والسماء رفعها ووضع الميزان"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "الا تطغوا في الميزان"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "واقيموا الوزن بالقسط ولا تخسروا الميزان"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "والارض وضعها للانام"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "فيها فكهة والنخل ذات الاكمام"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "والحب ذو العصف والريحان"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "فباي ءالاء ربكما تكذبان"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "خلق الانسن من صلصل كالفخار"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "وخلق الجان من مارج من نار"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "فباي ءالاء ربكما تكذبان"
        }
    ]
}