{
    "pages": [
        {
            "chapter": 50,
            "verse": 1,
            "text": "ق والقرءان المجيد"
        },
        {
            "chapter": 50,
            "verse": 2,
            "text": "بل عجبوا ان جاءهم منذر منهم فقال الكفرون هذا شيء عجيب"
        },
        {
            "chapter": 50,
            "verse": 3,
            "text": "اءذا متنا وكنا تراب ا ذلك رجع بعيد"
        },
        {
            "chapter": 50,
            "verse": 4,
            "text": "قد علمنا ما تنقص الارض منهم وعندنا كتب حفيظ"
        },
        {
            "chapter": 50,
            "verse": 5,
            "text": "بل كذبوا بالحق لما جاءهم فهم في امر مريج"
        },
        {
            "chapter": 50,
            "verse": 6,
            "text": "افلم ينظروا الى السماء فوقهم كيف بنينها وزينها وما لها من فروج"
        },
        {
            "chapter": 50,
            "verse": 7,
            "text": "والارض مددنها والقينا فيها روسي وانبتنا فيها من كل زوج بهيج"
        },
        {
            "chapter": 50,
            "verse": 8,
            "text": "تبصرة وذكرى لكل عبد منيب"
        },
        {
            "chapter": 50,
            "verse": 9,
            "text": "ونزلنا من السماء ماء مبرك ا فانبتنا به جنت وحب الحصيد"
        },
        {
            "chapter": 50,
            "verse": 10,
            "text": "والنخل باسقت لها طلع نضيد"
        },
        {
            "chapter": 50,
            "verse": 11,
            "text": "رزق ا للعباد واحيينا به بلدة ميت ا كذلك الخروج"
        },
        {
            "chapter": 50,
            "verse": 12,
            "text": "كذبت قبلهم قوم نوح واصحب الرس وثمود"
        },
        {
            "chapter": 50,
            "verse": 13,
            "text": "وعاد وفرعون واخون لوط"
        },
        {
            "chapter": 50,
            "verse": 14,
            "text": "واصحب الايكة وقوم تبع كل كذب الرسل فحق وعيد"
        },
        {
            "chapter": 50,
            "verse": 15,
            "text": "افعيينا بالخلق الاول بل هم في لبس من خلق جديد"
        }
    ]
}