{
    "pages": [
        {
            "chapter": 51,
            "verse": 31,
            "text": "۞قال فما خطبكم ايها المرسلون"
        },
        {
            "chapter": 51,
            "verse": 32,
            "text": "قالوا انا ارسلنا الى قوم مجرمين"
        },
        {
            "chapter": 51,
            "verse": 33,
            "text": "لنرسل عليهم حجارة من طين"
        },
        {
            "chapter": 51,
            "verse": 34,
            "text": "مسومة عند ربك للمسرفين"
        },
        {
            "chapter": 51,
            "verse": 35,
            "text": "فاخرجنا من كان فيها من المومنين"
        },
        {
            "chapter": 51,
            "verse": 36,
            "text": "فما وجدنا فيها غير بيت من المسلمين"
        },
        {
            "chapter": 51,
            "verse": 37,
            "text": "وتركنا فيها ءاية للذين يخافون العذاب الاليم"
        },
        {
            "chapter": 51,
            "verse": 38,
            "text": "وفي موسى اذ ارسلنه الى فرعون بسلطن مبين"
        },
        {
            "chapter": 51,
            "verse": 39,
            "text": "فتولى بركنه وقال سحر او مجنون"
        },
        {
            "chapter": 51,
            "verse": 40,
            "text": "فاخذنه وجنوده فنبذنهم في اليم وهو مليم"
        },
        {
            "chapter": 51,
            "verse": 41,
            "text": "وفي عاد اذ ارسلنا عليهم الريح العقيم"
        },
        {
            "chapter": 51,
            "verse": 42,
            "text": "ما تذر من شيء اتت عليه الا جعلته كالرميم"
        },
        {
            "chapter": 51,
            "verse": 43,
            "text": "وفي ثمود اذ قيل لهم تمتعوا حتى حين"
        },
        {
            "chapter": 51,
            "verse": 44,
            "text": "فعتوا عن امر ربهم فاخذتهم الصعقة وهم ينظرون"
        },
        {
            "chapter": 51,
            "verse": 45,
            "text": "فما استطعوا من قيام وما كانوا منتصرين"
        },
        {
            "chapter": 51,
            "verse": 46,
            "text": "وقوم نوح من قبل انهم كانوا قوم ا فسقين"
        },
        {
            "chapter": 51,
            "verse": 47,
            "text": "والسماء بنينها باييد وانا لموسعون"
        },
        {
            "chapter": 51,
            "verse": 48,
            "text": "والارض فرشنها فنعم المهدون"
        },
        {
            "chapter": 51,
            "verse": 49,
            "text": "ومن كل شيء خلقنا زوجين لعلكم تذكرون"
        },
        {
            "chapter": 51,
            "verse": 50,
            "text": "ففروا الى الله اني لكم منه نذير مبين"
        },
        {
            "chapter": 51,
            "verse": 51,
            "text": "ولا تجعلوا مع الله الها ءاخر اني لكم منه نذير مبين"
        }
    ]
}