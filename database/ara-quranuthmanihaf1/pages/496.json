{
    "pages": [
        {
            "chapter": 44,
            "verse": 1,
            "text": "حم"
        },
        {
            "chapter": 44,
            "verse": 2,
            "text": "والكتب المبين"
        },
        {
            "chapter": 44,
            "verse": 3,
            "text": "انا انزلنه في ليلة مبركة انا كنا منذرين"
        },
        {
            "chapter": 44,
            "verse": 4,
            "text": "فيها يفرق كل امر حكيم"
        },
        {
            "chapter": 44,
            "verse": 5,
            "text": "امر ا من عندنا انا كنا مرسلين"
        },
        {
            "chapter": 44,
            "verse": 6,
            "text": "رحمة من ربك انه هو السميع العليم"
        },
        {
            "chapter": 44,
            "verse": 7,
            "text": "رب السموت والارض وما بينهما ان كنتم موقنين"
        },
        {
            "chapter": 44,
            "verse": 8,
            "text": "لا اله الا هو يحي ويميت ربكم ورب ءابايكم الاولين"
        },
        {
            "chapter": 44,
            "verse": 9,
            "text": "بل هم في شك يلعبون"
        },
        {
            "chapter": 44,
            "verse": 10,
            "text": "فارتقب يوم تاتي السماء بدخان مبين"
        },
        {
            "chapter": 44,
            "verse": 11,
            "text": "يغشى الناس هذا عذاب اليم"
        },
        {
            "chapter": 44,
            "verse": 12,
            "text": "ربنا اكشف عنا العذاب انا مومنون"
        },
        {
            "chapter": 44,
            "verse": 13,
            "text": "انى لهم الذكرى وقد جاءهم رسول مبين"
        },
        {
            "chapter": 44,
            "verse": 14,
            "text": "ثم تولوا عنه وقالوا معلم مجنون"
        },
        {
            "chapter": 44,
            "verse": 15,
            "text": "انا كاشفوا العذاب قليلا انكم عايدون"
        },
        {
            "chapter": 44,
            "verse": 16,
            "text": "يوم نبطش البطشة الكبرى انا منتقمون"
        },
        {
            "chapter": 44,
            "verse": 17,
            "text": "۞ولقد فتنا قبلهم قوم فرعون وجاءهم رسول كريم"
        },
        {
            "chapter": 44,
            "verse": 18,
            "text": "ان ادوا الي عباد الله اني لكم رسول امين"
        }
    ]
}