{
    "pages": [
        {
            "chapter": 38,
            "verse": 43,
            "text": "ووهبنا له اهله ومثلهم معهم رحمة منا وذكرى لاولي الالبب"
        },
        {
            "chapter": 38,
            "verse": 44,
            "text": "وخذ بيدك ضغث ا فاضرب به ولا تحنث انا وجدنه صابر ا نعم العبد انه اواب"
        },
        {
            "chapter": 38,
            "verse": 45,
            "text": "واذكر عبدنا ابرهيم واسحق ويعقوب اولي الايدي والابصر"
        },
        {
            "chapter": 38,
            "verse": 46,
            "text": "انا اخلصنهم بخالصة ذكرى الدار"
        },
        {
            "chapter": 38,
            "verse": 47,
            "text": "وانهم عندنا لمن المصطفين الاخيار"
        },
        {
            "chapter": 38,
            "verse": 48,
            "text": "واذكر اسمعيل واليسع وذا الكفل وكل من الاخيار"
        },
        {
            "chapter": 38,
            "verse": 49,
            "text": "هذا ذكر وان للمتقين لحسن ماب"
        },
        {
            "chapter": 38,
            "verse": 50,
            "text": "جنت عدن مفتحة لهم الابوب"
        },
        {
            "chapter": 38,
            "verse": 51,
            "text": "متكين فيها يدعون فيها بفكهة كثيرة وشراب"
        },
        {
            "chapter": 38,
            "verse": 52,
            "text": "۞وعندهم قصرت الطرف اتراب"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "هذا ما توعدون ليوم الحساب"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "ان هذا لرزقنا ما له من نفاد"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "هذا وان للطغين لشر ماب"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "جهنم يصلونها فبيس المهاد"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "هذا فليذوقوه حميم وغساق"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "وءاخر من شكله ازوج"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "هذا فوج مقتحم معكم لا مرحبا بهم انهم صالوا النار"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "قالوا بل انتم لا مرحبا بكم انتم قدمتموه لنا فبيس القرار"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "قالوا ربنا من قدم لنا هذا فزده عذاب ا ضعف ا في النار"
        }
    ]
}