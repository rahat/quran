{
    "juzs": [
        {
            "chapter": 36,
            "verse": 28,
            "text": "۞وما انزلنا على قومه من بعده من جند من السماء وما كنا منزلين"
        },
        {
            "chapter": 36,
            "verse": 29,
            "text": "ان كانت الا صيحة وحدة فاذا هم خمدون"
        },
        {
            "chapter": 36,
            "verse": 30,
            "text": "يحسرة على العباد ما ياتيهم من رسول الا كانوا به يستهزءون"
        },
        {
            "chapter": 36,
            "verse": 31,
            "text": "الم يروا كم اهلكنا قبلهم من القرون انهم اليهم لا يرجعون"
        },
        {
            "chapter": 36,
            "verse": 32,
            "text": "وان كل لما جميع لدينا محضرون"
        },
        {
            "chapter": 36,
            "verse": 33,
            "text": "وءاية لهم الارض الميتة احيينها واخرجنا منها حب ا فمنه ياكلون"
        },
        {
            "chapter": 36,
            "verse": 34,
            "text": "وجعلنا فيها جنت من نخيل واعنب وفجرنا فيها من العيون"
        },
        {
            "chapter": 36,
            "verse": 35,
            "text": "لياكلوا من ثمره وما عملته ايديهم افلا يشكرون"
        },
        {
            "chapter": 36,
            "verse": 36,
            "text": "سبحن الذي خلق الازوج كلها مما تنبت الارض ومن انفسهم ومما لا يعلمون"
        },
        {
            "chapter": 36,
            "verse": 37,
            "text": "وءاية لهم اليل نسلخ منه النهار فاذا هم مظلمون"
        },
        {
            "chapter": 36,
            "verse": 38,
            "text": "والشمس تجري لمستقر لها ذلك تقدير العزيز العليم"
        },
        {
            "chapter": 36,
            "verse": 39,
            "text": "والقمر قدرنه منازل حتى عاد كالعرجون القديم"
        },
        {
            "chapter": 36,
            "verse": 40,
            "text": "لا الشمس ينبغي لها ان تدرك القمر ولا اليل سابق النهار وكل في فلك يسبحون"
        },
        {
            "chapter": 36,
            "verse": 41,
            "text": "وءاية لهم انا حملنا ذريتهم في الفلك المشحون"
        },
        {
            "chapter": 36,
            "verse": 42,
            "text": "وخلقنا لهم من مثله ما يركبون"
        },
        {
            "chapter": 36,
            "verse": 43,
            "text": "وان نشا نغرقهم فلا صريخ لهم ولا هم ينقذون"
        },
        {
            "chapter": 36,
            "verse": 44,
            "text": "الا رحمة منا ومتعا الى حين"
        },
        {
            "chapter": 36,
            "verse": 45,
            "text": "واذا قيل لهم اتقوا ما بين ايديكم وما خلفكم لعلكم ترحمون"
        },
        {
            "chapter": 36,
            "verse": 46,
            "text": "وما تاتيهم من ءاية من ءايت ربهم الا كانوا عنها معرضين"
        },
        {
            "chapter": 36,
            "verse": 47,
            "text": "واذا قيل لهم انفقوا مما رزقكم الله قال الذين كفروا للذين ءامنوا انطعم من لو يشاء الله اطعمه ان انتم الا في ضلل مبين"
        },
        {
            "chapter": 36,
            "verse": 48,
            "text": "ويقولون متى هذا الوعد ان كنتم صدقين"
        },
        {
            "chapter": 36,
            "verse": 49,
            "text": "ما ينظرون الا صيحة وحدة تاخذهم وهم يخصمون"
        },
        {
            "chapter": 36,
            "verse": 50,
            "text": "فلا يستطيعون توصية ولا الى اهلهم يرجعون"
        },
        {
            "chapter": 36,
            "verse": 51,
            "text": "ونفخ في الصور فاذا هم من الاجداث الى ربهم ينسلون"
        },
        {
            "chapter": 36,
            "verse": 52,
            "text": "قالوا يويلنا من بعثنا من مرقدنا هذا ما وعد الرحمن وصدق المرسلون"
        },
        {
            "chapter": 36,
            "verse": 53,
            "text": "ان كانت الا صيحة وحدة فاذا هم جميع لدينا محضرون"
        },
        {
            "chapter": 36,
            "verse": 54,
            "text": "فاليوم لا تظلم نفس شي ا ولا تجزون الا ما كنتم تعملون"
        },
        {
            "chapter": 36,
            "verse": 55,
            "text": "ان اصحب الجنة اليوم في شغل فكهون"
        },
        {
            "chapter": 36,
            "verse": 56,
            "text": "هم وازوجهم في ظلل على الارايك متكون"
        },
        {
            "chapter": 36,
            "verse": 57,
            "text": "لهم فيها فكهة ولهم ما يدعون"
        },
        {
            "chapter": 36,
            "verse": 58,
            "text": "سلم قول ا من رب رحيم"
        },
        {
            "chapter": 36,
            "verse": 59,
            "text": "وامتزوا اليوم ايها المجرمون"
        },
        {
            "chapter": 36,
            "verse": 60,
            "text": "۞الم اعهد اليكم يبني ءادم ان لا تعبدوا الشيطن انه لكم عدو مبين"
        },
        {
            "chapter": 36,
            "verse": 61,
            "text": "وان اعبدوني هذا صرط مستقيم"
        },
        {
            "chapter": 36,
            "verse": 62,
            "text": "ولقد اضل منكم جبل ا كثيرا افلم تكونوا تعقلون"
        },
        {
            "chapter": 36,
            "verse": 63,
            "text": "هذه جهنم التي كنتم توعدون"
        },
        {
            "chapter": 36,
            "verse": 64,
            "text": "اصلوها اليوم بما كنتم تكفرون"
        },
        {
            "chapter": 36,
            "verse": 65,
            "text": "اليوم نختم على افوههم وتكلمنا ايديهم وتشهد ارجلهم بما كانوا يكسبون"
        },
        {
            "chapter": 36,
            "verse": 66,
            "text": "ولو نشاء لطمسنا على اعينهم فاستبقوا الصرط فانى يبصرون"
        },
        {
            "chapter": 36,
            "verse": 67,
            "text": "ولو نشاء لمسخنهم على مكانتهم فما استطعوا مضي ا ولا يرجعون"
        },
        {
            "chapter": 36,
            "verse": 68,
            "text": "ومن نعمره ننكسه في الخلق افلا يعقلون"
        },
        {
            "chapter": 36,
            "verse": 69,
            "text": "وما علمنه الشعر وما ينبغي له ان هو الا ذكر وقرءان مبين"
        },
        {
            "chapter": 36,
            "verse": 70,
            "text": "لينذر من كان حي ا ويحق القول على الكفرين"
        },
        {
            "chapter": 36,
            "verse": 71,
            "text": "اولم يروا انا خلقنا لهم مما عملت ايدينا انعم ا فهم لها ملكون"
        },
        {
            "chapter": 36,
            "verse": 72,
            "text": "وذللنها لهم فمنها ركوبهم ومنها ياكلون"
        },
        {
            "chapter": 36,
            "verse": 73,
            "text": "ولهم فيها منفع ومشارب افلا يشكرون"
        },
        {
            "chapter": 36,
            "verse": 74,
            "text": "واتخذوا من دون الله ءالهة لعلهم ينصرون"
        },
        {
            "chapter": 36,
            "verse": 75,
            "text": "لا يستطيعون نصرهم وهم لهم جند محضرون"
        },
        {
            "chapter": 36,
            "verse": 76,
            "text": "فلا يحزنك قولهم انا نعلم ما يسرون وما يعلنون"
        },
        {
            "chapter": 36,
            "verse": 77,
            "text": "اولم ير الانسن انا خلقنه من نطفة فاذا هو خصيم مبين"
        },
        {
            "chapter": 36,
            "verse": 78,
            "text": "وضرب لنا مثل ا ونسي خلقه قال من يحي العظم وهي رميم"
        },
        {
            "chapter": 36,
            "verse": 79,
            "text": "قل يحييها الذي انشاها اول مرة وهو بكل خلق عليم"
        },
        {
            "chapter": 36,
            "verse": 80,
            "text": "الذي جعل لكم من الشجر الاخضر نار ا فاذا انتم منه توقدون"
        },
        {
            "chapter": 36,
            "verse": 81,
            "text": "اوليس الذي خلق السموت والارض بقدر على ان يخلق مثلهم بلى وهو الخلق العليم"
        },
        {
            "chapter": 36,
            "verse": 82,
            "text": "انما امره اذا اراد شيا ان يقول له كن فيكون"
        },
        {
            "chapter": 36,
            "verse": 83,
            "text": "فسبحن الذي بيده ملكوت كل شيء واليه ترجعون"
        },
        {
            "chapter": 37,
            "verse": 1,
            "text": "والصفت صف ا"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فالزجرت زجر ا"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فالتليت ذكرا"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "ان الهكم لوحد"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رب السموت والارض وما بينهما ورب المشرق"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "انا زينا السماء الدنيا بزينة الكواكب"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وحفظ ا من كل شيطن مارد"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لا يسمعون الى الملا الاعلى ويقذفون من كل جانب"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دحور ا ولهم عذاب واصب"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "الا من خطف الخطفة فاتبعه شهاب ثاقب"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فاستفتهم اهم اشد خلقا ام من خلقنا انا خلقنهم من طين لازب"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بل عجبت ويسخرون"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "واذا ذكروا لا يذكرون"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "واذا راوا ءاية يستسخرون"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وقالوا ان هذا الا سحر مبين"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "اءذا متنا وكنا تراب ا وعظما اءنا لمبعوثون"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "اوءاباونا الاولون"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قل نعم وانتم دخرون"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فانما هي زجرة وحدة فاذا هم ينظرون"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وقالوا يويلنا هذا يوم الدين"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هذا يوم الفصل الذي كنتم به تكذبون"
        },
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞احشروا الذين ظلموا وازوجهم وما كانوا يعبدون"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "من دون الله فاهدوهم الى صرط الجحيم"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وقفوهم انهم مسولون"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "ما لكم لا تناصرون"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بل هم اليوم مستسلمون"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "واقبل بعضهم على بعض يتساءلون"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قالوا انكم كنتم تاتوننا عن اليمين"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قالوا بل لم تكونوا مومنين"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وما كان لنا عليكم من سلطن بل كنتم قوم ا طغين"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فحق علينا قول ربنا انا لذايقون"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فاغوينكم انا كنا غوين"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فانهم يوميذ في العذاب مشتركون"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "انا كذلك نفعل بالمجرمين"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "انهم كانوا اذا قيل لهم لا اله الا الله يستكبرون"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "ويقولون اينا لتاركوا ءالهتنا لشاعر مجنون"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بل جاء بالحق وصدق المرسلين"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "انكم لذايقوا العذاب الاليم"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وما تجزون الا ما كنتم تعملون"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "الا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "اوليك لهم رزق معلوم"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فوكه وهم مكرمون"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "في جنت النعيم"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "على سرر متقبلين"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يطاف عليهم بكاس من معين"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بيضاء لذة للشربين"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لا فيها غول ولا هم عنها ينزفون"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وعندهم قصرت الطرف عين"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كانهن بيض مكنون"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فاقبل بعضهم على بعض يتساءلون"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قال قايل منهم اني كان لي قرين"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يقول اءنك لمن المصدقين"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "اءذا متنا وكنا تراب ا وعظما اءنا لمدينون"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قال هل انتم مطلعون"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فاطلع فرءاه في سواء الجحيم"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قال تالله ان كدت لتردين"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "ولولا نعمة ربي لكنت من المحضرين"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "افما نحن بميتين"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "الا موتتنا الاولى وما نحن بمعذبين"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "ان هذا لهو الفوز العظيم"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لمثل هذا فليعمل العملون"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "اذلك خير نزلا ام شجرة الزقوم"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "انا جعلنها فتنة للظلمين"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "انها شجرة تخرج في اصل الجحيم"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طلعها كانه رءوس الشيطين"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فانهم لاكلون منها فمالون منها البطون"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثم ان لهم عليها لشوب ا من حميم"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثم ان مرجعهم لالى الجحيم"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "انهم الفوا ءاباءهم ضالين"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فهم على ءاثرهم يهرعون"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "ولقد ضل قبلهم اكثر الاولين"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "ولقد ارسلنا فيهم منذرين"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فانظر كيف كان عقبة المنذرين"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "الا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "ولقد نادىنا نوح فلنعم المجيبون"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "ونجينه واهله من الكرب العظيم"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وجعلنا ذريته هم الباقين"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وتركنا عليه في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سلم على نوح في العلمين"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "انه من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثم اغرقنا الاخرين"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "۞وان من شيعته لابرهيم"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "اذ جاء ربه بقلب سليم"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "اذ قال لابيه وقومه ماذا تعبدون"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "ايفكا ءالهة دون الله تريدون"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "فما ظنكم برب العلمين"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "فنظر نظرة في النجوم"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "فقال اني سقيم"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "فتولوا عنه مدبرين"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "فراغ الى ءالهتهم فقال الا تاكلون"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "ما لكم لا تنطقون"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "فراغ عليهم ضربا باليمين"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "فاقبلوا اليه يزفون"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "قال اتعبدون ما تنحتون"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "والله خلقكم وما تعملون"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "قالوا ابنوا له بنين ا فالقوه في الجحيم"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "فارادوا به كيد ا فجعلنهم الاسفلين"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "وقال اني ذاهب الى ربي سيهدين"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "رب هب لي من الصلحين"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "فبشرنه بغلم حليم"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "فلما بلغ معه السعي قال يبني اني ارى في المنام اني اذبحك فانظر ماذا ترى قال يابت افعل ما تومر ستجدني ان شاء الله من الصبرين"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "فلما اسلما وتله للجبين"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "وندينه ان يابرهيم"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "قد صدقت الرءيا انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "ان هذا لهو البلوا المبين"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "وفدينه بذبح عظيم"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "وتركنا عليه في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "سلم على ابرهيم"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "انه من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "وبشرنه باسحق نبي ا من الصلحين"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "وبركنا عليه وعلى اسحق ومن ذريتهما محسن وظالم لنفسه مبين"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "ولقد مننا على موسى وهرون"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "ونجينهما وقومهما من الكرب العظيم"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "ونصرنهم فكانوا هم الغلبين"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "وءاتينهما الكتب المستبين"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "وهدينهما الصرط المستقيم"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "وتركنا عليهما في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سلم على موسى وهرون"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "انهما من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "وان الياس لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "اذ قال لقومه الا تتقون"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "اتدعون بعل ا وتذرون احسن الخلقين"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "الله ربكم ورب ءابايكم الاولين"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "فكذبوه فانهم لمحضرون"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "الا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "وتركنا عليه في الاخرين"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "سلم على ال ياسين"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "انا كذلك نجزي المحسنين"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "انه من عبادنا المومنين"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "وان لوط ا لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "اذ نجينه واهله اجمعين"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "الا عجوز ا في الغبرين"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "ثم دمرنا الاخرين"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "وانكم لتمرون عليهم مصبحين"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "وباليل افلا تعقلون"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "وان يونس لمن المرسلين"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "اذ ابق الى الفلك المشحون"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "فساهم فكان من المدحضين"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "فالتقمه الحوت وهو مليم"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "فلولا انه كان من المسبحين"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "للبث في بطنه الى يوم يبعثون"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "۞فنبذنه بالعراء وهو سقيم"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وانبتنا عليه شجرة من يقطين"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وارسلنه الى ماية الف او يزيدون"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فامنوا فمتعنهم الى حين"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فاستفتهم الربك البنات ولهم البنون"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "ام خلقنا المليكة انث ا وهم شهدون"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "الا انهم من افكهم ليقولون"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "ولد الله وانهم لكذبون"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "اصطفى البنات على البنين"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "ما لكم كيف تحكمون"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "افلا تذكرون"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "ام لكم سلطن مبين"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فاتوا بكتبكم ان كنتم صدقين"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وجعلوا بينه وبين الجنة نسب ا ولقد علمت الجنة انهم لمحضرون"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سبحن الله عما يصفون"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "الا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فانكم وما تعبدون"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "ما انتم عليه بفتنين"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "الا من هو صال الجحيم"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وما منا الا له مقام معلوم"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وانا لنحن الصافون"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وانا لنحن المسبحون"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وان كانوا ليقولون"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لو ان عندنا ذكر ا من الاولين"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لكنا عباد الله المخلصين"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فكفروا به فسوف يعلمون"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "ولقد سبقت كلمتنا لعبادنا المرسلين"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "انهم لهم المنصورون"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وان جندنا لهم الغلبون"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فتول عنهم حتى حين"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وابصرهم فسوف يبصرون"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "افبعذابنا يستعجلون"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فاذا نزل بساحتهم فساء صباح المنذرين"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وتول عنهم حتى حين"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وابصر فسوف يبصرون"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سبحن ربك رب العزة عما يصفون"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وسلم على المرسلين"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "والحمد لله رب العلمين"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "ص والقرءان ذي الذكر"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "بل الذين كفروا في عزة وشقاق"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "كم اهلكنا من قبلهم من قرن فنادوا ولات حين مناص"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "وعجبوا ان جاءهم منذر منهم وقال الكفرون هذا سحر كذاب"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "اجعل الالهة اله ا وحدا ان هذا لشيء عجاب"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "وانطلق الملا منهم ان امشوا واصبروا على ءالهتكم ان هذا لشيء يراد"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "ما سمعنا بهذا في الملة الاخرة ان هذا الا اختلق"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "اءنزل عليه الذكر من بيننا بل هم في شك من ذكري بل لما يذوقوا عذاب"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "ام عندهم خزاين رحمة ربك العزيز الوهاب"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "ام لهم ملك السموت والارض وما بينهما فليرتقوا في الاسبب"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "جند ما هنالك مهزوم من الاحزاب"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "كذبت قبلهم قوم نوح وعاد وفرعون ذو الاوتاد"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "وثمود وقوم لوط واصحب ليكة اوليك الاحزاب"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "ان كل الا كذب الرسل فحق عقاب"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "وما ينظر هولاء الا صيحة وحدة ما لها من فواق"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "وقالوا ربنا عجل لنا قطنا قبل يوم الحساب"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "اصبر على ما يقولون واذكر عبدنا داود ذا الايد انه اواب"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "انا سخرنا الجبال معه يسبحن بالعشي والاشراق"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "والطير محشورة كل له اواب"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "وشددنا ملكه وءاتينه الحكمة وفصل الخطاب"
        },
        {
            "chapter": 38,
            "verse": 21,
            "text": "۞وهل اتىك نبوا الخصم اذ تسوروا المحراب"
        },
        {
            "chapter": 38,
            "verse": 22,
            "text": "اذ دخلوا على داود ففزع منهم قالوا لا تخف خصمان بغى بعضنا على بعض فاحكم بيننا بالحق ولا تشطط واهدنا الى سواء الصرط"
        },
        {
            "chapter": 38,
            "verse": 23,
            "text": "ان هذا اخي له تسع وتسعون نعجة ولي نعجة وحدة فقال اكفلنيها وعزني في الخطاب"
        },
        {
            "chapter": 38,
            "verse": 24,
            "text": "قال لقد ظلمك بسوال نعجتك الى نعاجه وان كثير ا من الخلطاء ليبغي بعضهم على بعض الا الذين ءامنوا وعملوا الصلحت وقليل ما هم وظن داود انما فتنه فاستغفر ربه وخر راكع ا واناب۩"
        },
        {
            "chapter": 38,
            "verse": 25,
            "text": "فغفرنا له ذلك وان له عندنا لزلفى وحسن ماب"
        },
        {
            "chapter": 38,
            "verse": 26,
            "text": "يداود انا جعلنك خليفة في الارض فاحكم بين الناس بالحق ولا تتبع الهوى فيضلك عن سبيل الله ان الذين يضلون عن سبيل الله لهم عذاب شديد بما نسوا يوم الحساب"
        },
        {
            "chapter": 38,
            "verse": 27,
            "text": "وما خلقنا السماء والارض وما بينهما بطل ا ذلك ظن الذين كفروا فويل للذين كفروا من النار"
        },
        {
            "chapter": 38,
            "verse": 28,
            "text": "ام نجعل الذين ءامنوا وعملوا الصلحت كالمفسدين في الارض ام نجعل المتقين كالفجار"
        },
        {
            "chapter": 38,
            "verse": 29,
            "text": "كتب انزلنه اليك مبرك ليدبروا ءايته وليتذكر اولوا الالبب"
        },
        {
            "chapter": 38,
            "verse": 30,
            "text": "ووهبنا لداود سليمن نعم العبد انه اواب"
        },
        {
            "chapter": 38,
            "verse": 31,
            "text": "اذ عرض عليه بالعشي الصفنت الجياد"
        },
        {
            "chapter": 38,
            "verse": 32,
            "text": "فقال اني احببت حب الخير عن ذكر ربي حتى توارت بالحجاب"
        },
        {
            "chapter": 38,
            "verse": 33,
            "text": "ردوها علي فطفق مسحا بالسوق والاعناق"
        },
        {
            "chapter": 38,
            "verse": 34,
            "text": "ولقد فتنا سليمن والقينا على كرسيه جسد ا ثم اناب"
        },
        {
            "chapter": 38,
            "verse": 35,
            "text": "قال رب اغفر لي وهب لي ملك ا لا ينبغي لاحد من بعدي انك انت الوهاب"
        },
        {
            "chapter": 38,
            "verse": 36,
            "text": "فسخرنا له الريح تجري بامره رخاء حيث اصاب"
        },
        {
            "chapter": 38,
            "verse": 37,
            "text": "والشيطين كل بناء وغواص"
        },
        {
            "chapter": 38,
            "verse": 38,
            "text": "وءاخرين مقرنين في الاصفاد"
        },
        {
            "chapter": 38,
            "verse": 39,
            "text": "هذا عطاونا فامنن او امسك بغير حساب"
        },
        {
            "chapter": 38,
            "verse": 40,
            "text": "وان له عندنا لزلفى وحسن ماب"
        },
        {
            "chapter": 38,
            "verse": 41,
            "text": "واذكر عبدنا ايوب اذ نادى ربه اني مسني الشيطن بنصب وعذاب"
        },
        {
            "chapter": 38,
            "verse": 42,
            "text": "اركض برجلك هذا مغتسل بارد وشراب"
        },
        {
            "chapter": 38,
            "verse": 43,
            "text": "ووهبنا له اهله ومثلهم معهم رحمة منا وذكرى لاولي الالبب"
        },
        {
            "chapter": 38,
            "verse": 44,
            "text": "وخذ بيدك ضغث ا فاضرب به ولا تحنث انا وجدنه صابر ا نعم العبد انه اواب"
        },
        {
            "chapter": 38,
            "verse": 45,
            "text": "واذكر عبدنا ابرهيم واسحق ويعقوب اولي الايدي والابصر"
        },
        {
            "chapter": 38,
            "verse": 46,
            "text": "انا اخلصنهم بخالصة ذكرى الدار"
        },
        {
            "chapter": 38,
            "verse": 47,
            "text": "وانهم عندنا لمن المصطفين الاخيار"
        },
        {
            "chapter": 38,
            "verse": 48,
            "text": "واذكر اسمعيل واليسع وذا الكفل وكل من الاخيار"
        },
        {
            "chapter": 38,
            "verse": 49,
            "text": "هذا ذكر وان للمتقين لحسن ماب"
        },
        {
            "chapter": 38,
            "verse": 50,
            "text": "جنت عدن مفتحة لهم الابوب"
        },
        {
            "chapter": 38,
            "verse": 51,
            "text": "متكين فيها يدعون فيها بفكهة كثيرة وشراب"
        },
        {
            "chapter": 38,
            "verse": 52,
            "text": "۞وعندهم قصرت الطرف اتراب"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "هذا ما توعدون ليوم الحساب"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "ان هذا لرزقنا ما له من نفاد"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "هذا وان للطغين لشر ماب"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "جهنم يصلونها فبيس المهاد"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "هذا فليذوقوه حميم وغساق"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "وءاخر من شكله ازوج"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "هذا فوج مقتحم معكم لا مرحبا بهم انهم صالوا النار"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "قالوا بل انتم لا مرحبا بكم انتم قدمتموه لنا فبيس القرار"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "قالوا ربنا من قدم لنا هذا فزده عذاب ا ضعف ا في النار"
        },
        {
            "chapter": 38,
            "verse": 62,
            "text": "وقالوا ما لنا لا نرى رجال ا كنا نعدهم من الاشرار"
        },
        {
            "chapter": 38,
            "verse": 63,
            "text": "اتخذنهم سخريا ام زاغت عنهم الابصر"
        },
        {
            "chapter": 38,
            "verse": 64,
            "text": "ان ذلك لحق تخاصم اهل النار"
        },
        {
            "chapter": 38,
            "verse": 65,
            "text": "قل انما انا منذر وما من اله الا الله الوحد القهار"
        },
        {
            "chapter": 38,
            "verse": 66,
            "text": "رب السموت والارض وما بينهما العزيز الغفر"
        },
        {
            "chapter": 38,
            "verse": 67,
            "text": "قل هو نبوا عظيم"
        },
        {
            "chapter": 38,
            "verse": 68,
            "text": "انتم عنه معرضون"
        },
        {
            "chapter": 38,
            "verse": 69,
            "text": "ما كان لي من علم بالملا الاعلى اذ يختصمون"
        },
        {
            "chapter": 38,
            "verse": 70,
            "text": "ان يوحى الي الا انما انا نذير مبين"
        },
        {
            "chapter": 38,
            "verse": 71,
            "text": "اذ قال ربك للمليكة اني خلق بشر ا من طين"
        },
        {
            "chapter": 38,
            "verse": 72,
            "text": "فاذا سويته ونفخت فيه من روحي فقعوا له سجدين"
        },
        {
            "chapter": 38,
            "verse": 73,
            "text": "فسجد المليكة كلهم اجمعون"
        },
        {
            "chapter": 38,
            "verse": 74,
            "text": "الا ابليس استكبر وكان من الكفرين"
        },
        {
            "chapter": 38,
            "verse": 75,
            "text": "قال يابليس ما منعك ان تسجد لما خلقت بيدي استكبرت ام كنت من العالين"
        },
        {
            "chapter": 38,
            "verse": 76,
            "text": "قال انا خير منه خلقتني من نار وخلقته من طين"
        },
        {
            "chapter": 38,
            "verse": 77,
            "text": "قال فاخرج منها فانك رجيم"
        },
        {
            "chapter": 38,
            "verse": 78,
            "text": "وان عليك لعنتي الى يوم الدين"
        },
        {
            "chapter": 38,
            "verse": 79,
            "text": "قال رب فانظرني الى يوم يبعثون"
        },
        {
            "chapter": 38,
            "verse": 80,
            "text": "قال فانك من المنظرين"
        },
        {
            "chapter": 38,
            "verse": 81,
            "text": "الى يوم الوقت المعلوم"
        },
        {
            "chapter": 38,
            "verse": 82,
            "text": "قال فبعزتك لاغوينهم اجمعين"
        },
        {
            "chapter": 38,
            "verse": 83,
            "text": "الا عبادك منهم المخلصين"
        },
        {
            "chapter": 38,
            "verse": 84,
            "text": "قال فالحق والحق اقول"
        },
        {
            "chapter": 38,
            "verse": 85,
            "text": "لاملان جهنم منك وممن تبعك منهم اجمعين"
        },
        {
            "chapter": 38,
            "verse": 86,
            "text": "قل ما اسلكم عليه من اجر وما انا من المتكلفين"
        },
        {
            "chapter": 38,
            "verse": 87,
            "text": "ان هو الا ذكر للعلمين"
        },
        {
            "chapter": 38,
            "verse": 88,
            "text": "ولتعلمن نباه بعد حين"
        },
        {
            "chapter": 39,
            "verse": 1,
            "text": "تنزيل الكتب من الله العزيز الحكيم"
        },
        {
            "chapter": 39,
            "verse": 2,
            "text": "انا انزلنا اليك الكتب بالحق فاعبد الله مخلص ا له الدين"
        },
        {
            "chapter": 39,
            "verse": 3,
            "text": "الا لله الدين الخالص والذين اتخذوا من دونه اولياء ما نعبدهم الا ليقربونا الى الله زلفى ان الله يحكم بينهم في ما هم فيه يختلفون ان الله لا يهدي من هو كذب كفار"
        },
        {
            "chapter": 39,
            "verse": 4,
            "text": "لو اراد الله ان يتخذ ولد ا لاصطفى مما يخلق ما يشاء سبحنه هو الله الوحد القهار"
        },
        {
            "chapter": 39,
            "verse": 5,
            "text": "خلق السموت والارض بالحق يكور اليل على النهار ويكور النهار على اليل وسخر الشمس والقمر كل يجري لاجل مسمى الا هو العزيز الغفر"
        },
        {
            "chapter": 39,
            "verse": 6,
            "text": "خلقكم من نفس وحدة ثم جعل منها زوجها وانزل لكم من الانعم ثمنية ازوج يخلقكم في بطون امهتكم خلق ا من بعد خلق في ظلمت ثلث ذلكم الله ربكم له الملك لا اله الا هو فانى تصرفون"
        },
        {
            "chapter": 39,
            "verse": 7,
            "text": "ان تكفروا فان الله غني عنكم ولا يرضى لعباده الكفر وان تشكروا يرضه لكم ولا تزر وازرة وزر اخرى ثم الى ربكم مرجعكم فينبيكم بما كنتم تعملون انه عليم بذات الصدور"
        },
        {
            "chapter": 39,
            "verse": 8,
            "text": "۞واذا مس الانسن ضر دعا ربه منيبا اليه ثم اذا خوله نعمة منه نسي ما كان يدعوا اليه من قبل وجعل لله انداد ا ليضل عن سبيله قل تمتع بكفرك قليلا انك من اصحب النار"
        },
        {
            "chapter": 39,
            "verse": 9,
            "text": "امن هو قنت ءاناء اليل ساجد ا وقايم ا يحذر الاخرة ويرجوا رحمة ربه قل هل يستوي الذين يعلمون والذين لا يعلمون انما يتذكر اولوا الالبب"
        },
        {
            "chapter": 39,
            "verse": 10,
            "text": "قل يعباد الذين ءامنوا اتقوا ربكم للذين احسنوا في هذه الدنيا حسنة وارض الله وسعة انما يوفى الصبرون اجرهم بغير حساب"
        },
        {
            "chapter": 39,
            "verse": 11,
            "text": "قل اني امرت ان اعبد الله مخلص ا له الدين"
        },
        {
            "chapter": 39,
            "verse": 12,
            "text": "وامرت لان اكون اول المسلمين"
        },
        {
            "chapter": 39,
            "verse": 13,
            "text": "قل اني اخاف ان عصيت ربي عذاب يوم عظيم"
        },
        {
            "chapter": 39,
            "verse": 14,
            "text": "قل الله اعبد مخلص ا له ديني"
        },
        {
            "chapter": 39,
            "verse": 15,
            "text": "فاعبدوا ما شيتم من دونه قل ان الخسرين الذين خسروا انفسهم واهليهم يوم القيمة الا ذلك هو الخسران المبين"
        },
        {
            "chapter": 39,
            "verse": 16,
            "text": "لهم من فوقهم ظلل من النار ومن تحتهم ظلل ذلك يخوف الله به عباده يعباد فاتقون"
        },
        {
            "chapter": 39,
            "verse": 17,
            "text": "والذين اجتنبوا الطغوت ان يعبدوها وانابوا الى الله لهم البشرى فبشر عباد"
        },
        {
            "chapter": 39,
            "verse": 18,
            "text": "الذين يستمعون القول فيتبعون احسنه اوليك الذين هدىهم الله واوليك هم اولوا الالبب"
        },
        {
            "chapter": 39,
            "verse": 19,
            "text": "افمن حق عليه كلمة العذاب افانت تنقذ من في النار"
        },
        {
            "chapter": 39,
            "verse": 20,
            "text": "لكن الذين اتقوا ربهم لهم غرف من فوقها غرف مبنية تجري من تحتها الانهر وعد الله لا يخلف الله الميعاد"
        },
        {
            "chapter": 39,
            "verse": 21,
            "text": "الم تر ان الله انزل من السماء ماء فسلكه ينبيع في الارض ثم يخرج به زرع ا مختلفا الونه ثم يهيج فترىه مصفر ا ثم يجعله حطما ان في ذلك لذكرى لاولي الالبب"
        },
        {
            "chapter": 39,
            "verse": 22,
            "text": "افمن شرح الله صدره للاسلم فهو على نور من ربه فويل للقسية قلوبهم من ذكر الله اوليك في ضلل مبين"
        },
        {
            "chapter": 39,
            "verse": 23,
            "text": "الله نزل احسن الحديث كتب ا متشبه ا مثاني تقشعر منه جلود الذين يخشون ربهم ثم تلين جلودهم وقلوبهم الى ذكر الله ذلك هدى الله يهدي به من يشاء ومن يضلل الله فما له من هاد"
        },
        {
            "chapter": 39,
            "verse": 24,
            "text": "افمن يتقي بوجهه سوء العذاب يوم القيمة وقيل للظلمين ذوقوا ما كنتم تكسبون"
        },
        {
            "chapter": 39,
            "verse": 25,
            "text": "كذب الذين من قبلهم فاتىهم العذاب من حيث لا يشعرون"
        },
        {
            "chapter": 39,
            "verse": 26,
            "text": "فاذاقهم الله الخزي في الحيوة الدنيا ولعذاب الاخرة اكبر لو كانوا يعلمون"
        },
        {
            "chapter": 39,
            "verse": 27,
            "text": "ولقد ضربنا للناس في هذا القرءان من كل مثل لعلهم يتذكرون"
        },
        {
            "chapter": 39,
            "verse": 28,
            "text": "قرءانا عربيا غير ذي عوج لعلهم يتقون"
        },
        {
            "chapter": 39,
            "verse": 29,
            "text": "ضرب الله مثل ا رجل ا فيه شركاء متشكسون ورجل ا سلم ا لرجل هل يستويان مثلا الحمد لله بل اكثرهم لا يعلمون"
        },
        {
            "chapter": 39,
            "verse": 30,
            "text": "انك ميت وانهم ميتون"
        },
        {
            "chapter": 39,
            "verse": 31,
            "text": "ثم انكم يوم القيمة عند ربكم تختصمون"
        }
    ]
}