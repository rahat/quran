{
    "maqras": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "فَنَبَذۡنَٰهُ بِالۡعَرَآءِ وَهۡوَ سَقِيمٞ"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "۞وَأَنۢبَتۡنَا عَلَيۡهِ شَجَرَةٗ مِّن يَقۡطِينٖ"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وَأَرۡسَلۡنَٰهُ إِلَىٰ مِاْئَةِ أَلۡفٍ أَوۡ يَزِيدُونَ"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فَـَٔامَنُواْ فَمَتَّعۡنَٰهُمۡ إِلَىٰ حِينٖ"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فَاَسۡتَفۡتِهِمۡ أَلِرَبِّكَ اَ۬لۡبَنَاتُ وَلَهُمُ اُ۬لۡبَنُونَ"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "أَمۡ خَلَقۡنَا اَ۬لۡمَلَٰٓئِكَةَ إِنَٰثٗا وَهُمۡ شَٰهِدُونَ"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "أَلَآ إِنَّهُم مِّنۡ إِفۡكِهِمۡ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "وَلَدَ اَ۬للَّهُ وَإِنَّهُمۡ لَكَٰذِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "أَصۡطَفَى اَ۬لۡبَنَاتِ عَلَى اَ۬لۡبَنِينَ"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "مَا لَكُمۡ كَيۡفَ تَحۡكُمُونَ"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "أَفَلَا تَذَّكَّرُونَ"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "أَمۡ لَكُمۡ سُلۡطَٰنٞ مُّبِينٞ"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فَأۡتُواْ بِكِتَٰبِكُمۡ إِن كُنتُمۡ صَٰدِقِينَ"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وَجَعَلُواْ بَيۡنَهُۥ وَبَيۡنَ اَ۬لۡجِنَّةِ نَسَبٗاۚ وَلَقَدۡ عَلِمَتِ اِ۬لۡجِنَّةُ إِنَّهُمۡ لَمُحۡضَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سُبۡحَٰنَ اَ۬للَّهِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "إِلَّا عِبَادَ اَ۬للَّهِ اِ۬لۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فَإِنَّكُمۡ وَمَا تَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مَآ أَنتُمۡ عَلَيۡهِ بِفَٰتِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "إِلَّا مَنۡ هُوَ صَالِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وَمَا مِنَّآ إِلَّا لَهُۥ مَقَامٞ مَّعۡلُومٞ"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وَإِنَّا لَنَحۡنُ اُ۬لصَّآفُّونَ"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وَإِنَّا لَنَحۡنُ اُ۬لۡمُسَبِّحُونَ"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وَإِن كَانُواْ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لَوۡ أَنَّ عِندَنَا ذِكۡرٗا مِّنَ اَ۬لۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لَكُنَّا عِبَادَ اَ۬للَّهِ اِ۬لۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فَكَفَرُواْ بِهِۦۖ فَسَوۡفَ يَعۡلَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "وَلَقَد سَّبَقَتۡ كَلِمَتُنَا لِعِبَادِنَا اَ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "إِنَّهُمۡ لَهُمُ اُ۬لۡمَنصُورُونَ"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وَإِنَّ جُندَنَا لَهُمُ اُ۬لۡغَٰلِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فَتَوَلَّ عَنۡهُمۡ حَتَّىٰ حِينٖ"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وَأَبۡصِرۡهُمۡ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "أَفَبِعَذَابِنَا يَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فَإِذَا نَزَلَ بِسَاحَتِهِمۡ فَسَآءَ صَبَاحُ اُ۬لۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وَتَوَلَّ عَنۡهُمۡ حَتَّىٰ حِينٖ"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وَأَبۡصِرۡ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سُبۡحَٰنَ رَبِّكَ رَبِّ اِ۬لۡعِزَّةِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وَسَلَٰمٌ عَلَى اَ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وَاَلۡحَمۡدُ لِلَّهِ رَبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "صٓۚ وَاَلۡقُرۡءَانِ ذِي اِ۬لذِّكۡرِ"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "بَلِ اِ۬لَّذِينَ كَفَرُواْ فِي عِزَّةٖ وَشِقَاقٖ"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "كَمۡ أَهۡلَكۡنَا مِن قَبۡلِهِم مِّن قَرۡنٖ فَنَادَواْ وَّلَاتَ حِينَ مَنَاصٖ"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "وَعَجِبُوٓاْ أَن جَآءَهُم مُّنذِرٞ مِّنۡهُمۡۖ وَقَالَ اَ۬لۡكَٰفِرُونَ هَٰذَا سَٰحِرٞ كَذَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "أَجَعَلَ اَ۬لۡأٓلِهَةَ إِلَٰهٗا وَٰحِدًاۖ إِنَّ هَٰذَا لَشَيۡءٌ عُجَابٞ"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "وَاَنطَلَقَ اَ۬لۡمَلَأُ مِنۡهُمۡ أَنِ اِ۪مۡشُواْ وَاَصۡبِرُواْ عَلَىٰٓ ءَالِهَتِكُمۡۖ إِنَّ هَٰذَا لَشَيۡءٞ يُرَادُ"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "مَا سَمِعۡنَا بِهَٰذَا فِي اِ۬لۡمِلَّةِ اِ۬لۡأٓخِرَةِ إِنۡ هَٰذَآ إِلَّا اَ۪خۡتِلَٰقٌ"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "أَ۟نزِلَ عَلَيۡهِ اِ۬لذِّكۡرُ مِنۢ بَيۡنِنَاۚ بَلۡ هُمۡ فِي شَكّٖ مِّن ذِكۡرِيۚ بَل لَّمَّا يَذُوقُواْ عَذَابِ"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "أَمۡ عِندَهُمۡ خَزَآئِنُ رَحۡمَةِ رَبِّكَ اَ۬لۡعَزِيزِ اِ۬لۡوَهَّابِ"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "أَمۡ لَهُم مُّلۡكُ اُ۬لسَّمَٰوَٰتِ وَاَلۡأَرۡضِ وَمَا بَيۡنَهُمَاۖ فَلۡيَرۡتَقُواْ فِي اِ۬لۡأَسۡبَٰبِ"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "جُندٞ مَّا هُنَالِكَ مَهۡزُومٞ مِّنَ اَ۬لۡأَحۡزَابِ"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "كَذَّبَتۡ قَبۡلَهُمۡ قَوۡمُ نُوحٖ وَعَادٞ وَفِرۡعَوۡنُ ذُو اُ۬لۡأَوۡتَادِ"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "وَثَمُودُ وَقَوۡمُ لُوطٖ وَأَصۡحَٰبُ لۡـَٔيۡكَةِۚ أُوْلَٰٓئِكَ اَ۬لۡأَحۡزَابُ"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "إِن كُلٌّ إِلَّا كَذَّبَ اَ۬لرُّسُلَ فَحَقَّ عِقَابِ"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "وَمَا يَنظُرُ هَٰٓؤُلَآ إِلَّا صَيۡحَةٗ وَٰحِدَةٗ مَّا لَهَا مِن فَوَاقٖ"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "وَقَالُواْ رَبَّنَا عَجِّل لَّنَا قِطَّنَا قَبۡلَ يَوۡمِ اِ۬لۡحِسَابِ"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "اِ۪صۡبِرۡ عَلَىٰ مَا يَقُولُونَ وَاَذۡكُرۡ عَبۡدَنَا دَاوُۥدَ ذَا اَ۬لۡأَيۡدِۖ إِنَّهُۥٓ أَوَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "إِنَّا سَخَّرۡنَا اَ۬لۡجِبَالَ مَعَهُۥ يُسَبِّحۡنَ بِالۡعَشِيِّ وَاَلۡإِشۡرَاقِ"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "وَاَلطَّيۡرَ مَحۡشُورَةٗۖ كُلّٞ لَّهُۥٓ أَوَّابٞ"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "وَشَدَدۡنَا مُلۡكَهُۥ وَءَاتَيۡنَٰهُ اُ۬لۡحِكۡمَةَ وَفَصۡلَ اَ۬لۡخِطَابِ"
        }
    ]
}