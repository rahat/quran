{
    "maqras": [
        {
            "chapter": 15,
            "verse": 50,
            "text": "وَأَنَّ عَذَابِي هُوَ اَ۬لۡعَذَابُ اُ۬لۡأَلِيمُ"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "۞وَنَبِّئۡهُمۡ عَن ضَيۡفِ إِبۡرَٰهِيمَ"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "إِذ دَّخَلُواْ عَلَيۡهِ فَقَالُواْ سَلَٰمٗا قَالَ إِنَّا مِنكُمۡ وَجِلُونَ"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "قَالُواْ لَا تَوۡجَلۡ إِنَّا نُبَشِّرُكَ بِغُلَٰمٍ عَلِيمٖ"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "قَالَ أَبَشَّرۡتُمُونِي عَلَىٰٓ أَن مَّسَّنِيَ اَ۬لۡكِبَرُ فَبِمَ تُبَشِّرُونَ"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "قَالُواْ بَشَّرۡنَٰكَ بِالۡحَقِّ فَلَا تَكُن مِّنَ اَ۬لۡقَٰنِطِينَ"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "قَالَ وَمَن يَقۡنِطُ مِن رَّحۡمَةِ رَبِّهِۦٓ إِلَّا اَ۬لضَّآلُّونَ"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "قَالَ فَمَا خَطۡبُكُمۡ أَيُّهَا اَ۬لۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "قَالُوٓاْ إِنَّآ أُرۡسِلۡنَآ إِلَىٰ قَوۡمٖ مُّجۡرِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "إِلَّآ ءَالَ لُوطٍ إِنَّا لَمُنَجُّوهُمۡ أَجۡمَعِينَ"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "إِلَّا اَ۪مۡرَأَتَهُۥ قَدَّرۡنَآ إِنَّهَا لَمِنَ اَ۬لۡغَٰبِرِينَ"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَآ ءَالَ لُوطٍ اِ۬لۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمۡ قَوۡمٞ مُّنكَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُواْ بَلۡ جِئۡنَٰكَ بِمَا كَانُواْ فِيهِ يَمۡتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَيۡنَٰكَ بِالۡحَقِّ وَإِنَّا لَصَٰدِقُونَ"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَأَسۡرِ بِأَهۡلِكَ بِقِطۡعٖ مِّنَ اَ۬لَّيۡلِ وَاَتَّبِعۡ أَدۡبَٰرَهُمۡ وَلَا يَلۡتَفِتۡ مِنكُمۡ أَحَدٞ وَاَمۡضُواْ حَيۡثُ تُؤۡمَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَيۡنَآ إِلَيۡهِ ذَٰلِكَ اَ۬لۡأَمۡرَ أَنَّ دَابِرَ هَٰٓؤُلَآءِ مَقۡطُوعٞ مُّصۡبِحِينَ"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَآ أَهۡلُ اُ۬لۡمَدِينَةِ يَسۡتَبۡشِرُونَ"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَٰٓؤُلَآءِ ضَيۡفِي فَلَا تَفۡضَحُونِ"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَاَتَّقُواْ اُ۬للَّهَ وَلَا تُخۡزُونِ"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُوٓاْ أَوَلَمۡ نَنۡهَكَ عَنِ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَٰٓؤُلَآءِ بَنَاتِيٓ إِن كُنتُمۡ فَٰعِلِينَ"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمۡرُكَ إِنَّهُمۡ لَفِي سَكۡرَتِهِمۡ يَعۡمَهُونَ"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتۡهُمُ اُ۬لصَّيۡحَةُ مُشۡرِقِينَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلۡنَا عَٰلِيَهَا سَافِلَهَا وَأَمۡطَرۡنَا عَلَيۡهِمۡ حِجَارَةٗ مِّن سِجِّيلٍ"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَٰتٖ لِّلۡمُتَوَسِّمِينَ"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِيلٖ مُّقِيمٍ"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَةٗ لِّلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وَإِن كَانَ أَصۡحَٰبُ اُ۬لۡأَيۡكَةِ لَظَٰلِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَاَنتَقَمۡنَا مِنۡهُمۡ وَإِنَّهُمَا لَبِإِمَامٖ مُّبِينٖ"
        },
        {
            "chapter": 15,
            "verse": 80,
            "text": "۞وَلَقَدۡ كَذَّبَ أَصۡحَٰبُ اُ۬لۡحِجۡرِ اِ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 15,
            "verse": 81,
            "text": "وَءَاتَيۡنَٰهُمۡ ءَايَٰتِنَا فَكَانُواْ عَنۡهَا مُعۡرِضِينَ"
        },
        {
            "chapter": 15,
            "verse": 82,
            "text": "وَكَانُواْ يَنۡحِتُونَ مِنَ اَ۬لۡجِبَالِ بُيُوتًا ءَامِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 83,
            "text": "فَأَخَذَتۡهُمُ اُ۬لصَّيۡحَةُ مُصۡبِحِينَ"
        },
        {
            "chapter": 15,
            "verse": 84,
            "text": "فَمَآ أَغۡنَىٰ عَنۡهُم مَّا كَانُواْ يَكۡسِبُونَ"
        },
        {
            "chapter": 15,
            "verse": 85,
            "text": "وَمَا خَلَقۡنَا اَ۬لسَّمَٰوَٰتِ وَاَلۡأَرۡضَ وَمَا بَيۡنَهُمَآ إِلَّا بِالۡحَقِّۗ وَإِنَّ اَ۬لسَّاعَةَ لَأٓتِيَةٞۖ فَاَصۡفَحِ اِ۬لصَّفۡحَ اَ۬لۡجَمِيلَ"
        },
        {
            "chapter": 15,
            "verse": 86,
            "text": "إِنَّ رَبَّكَ هُوَ اَ۬لۡخَلَّٰقُ اُ۬لۡعَلِيمُ"
        },
        {
            "chapter": 15,
            "verse": 87,
            "text": "وَلَقَدۡ ءَاتَيۡنَٰكَ سَبۡعٗا مِّنَ اَ۬لۡمَثَانِي وَاَلۡقُرۡءَانَ اَ۬لۡعَظِيمَ"
        },
        {
            "chapter": 15,
            "verse": 88,
            "text": "لَا تَمُدَّنَّ عَيۡنَيۡكَ إِلَىٰ مَا مَتَّعۡنَا بِهِۦٓ أَزۡوَٰجٗا مِّنۡهُمۡ وَلَا تَحۡزَنۡ عَلَيۡهِمۡ وَاَخۡفِضۡ جَنَاحَكَ لِلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 89,
            "text": "وَقُلۡ إِنِّيَ أَنَا اَ۬لنَّذِيرُ اُ۬لۡمُبِينُ"
        },
        {
            "chapter": 15,
            "verse": 90,
            "text": "كَمَآ أَنزَلۡنَا عَلَى اَ۬لۡمُقۡتَسِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 91,
            "text": "اَ۬لَّذِينَ جَعَلُواْ اُ۬لۡقُرۡءَانَ عِضِينَ"
        },
        {
            "chapter": 15,
            "verse": 92,
            "text": "فَوَرَبِّكَ لَنَسۡـَٔلَنَّهُمۡ أَجۡمَعِينَ"
        },
        {
            "chapter": 15,
            "verse": 93,
            "text": "عَمَّا كَانُواْ يَعۡمَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 94,
            "text": "فَاَصۡدَعۡ بِمَا تُؤۡمَرُ وَأَعۡرِضۡ عَنِ اِ۬لۡمُشۡرِكِينَ"
        },
        {
            "chapter": 15,
            "verse": 95,
            "text": "إِنَّا كَفَيۡنَٰكَ اَ۬لۡمُسۡتَهۡزِءِينَ"
        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "اَ۬لَّذِينَ يَجۡعَلُونَ مَعَ اَ۬للَّهِ إِلَٰهًا ءَاخَرَۚ فَسَوۡفَ يَعۡلَمُونَ"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "وَلَقَدۡ نَعۡلَمُ أَنَّكَ يَضِيقُ صَدۡرُكَ بِمَا يَقُولُونَ"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "فَسَبِّحۡ بِحَمۡدِ رَبِّكَ وَكُن مِّنَ اَ۬لسَّٰجِدِينَ"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "وَاَعۡبُدۡ رَبَّكَ حَتَّىٰ يَأۡتِيَكَ اَ۬لۡيَقِينُ"
        }
    ]
}