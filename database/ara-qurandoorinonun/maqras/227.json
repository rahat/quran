{
    "maqras": [
        {
            "chapter": 69,
            "verse": 1,
            "text": "اِ۬لۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 2,
            "text": "مَا اَ۬لۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 3,
            "text": "وَمَآ أَدۡر۪ىٰكَ مَا اَ۬لۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 4,
            "text": "كَذَّبَت ثَّمُودُ وَعَادُۢ بِالۡقَارِعَةِ"
        },
        {
            "chapter": 69,
            "verse": 5,
            "text": "فَأَمَّا ثَمُودُ فَأُهۡلِكُواْ بِالطَّاغِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 6,
            "text": "وَأَمَّا عَادٞ فَأُهۡلِكُواْ بِرِيحٖ صَرۡصَرٍ عَاتِيَةٖ"
        },
        {
            "chapter": 69,
            "verse": 7,
            "text": "سَخَّرَهَا عَلَيۡهِمۡ سَبۡعَ لَيَالٖ وَثَمَٰنِيَةَ أَيَّامٍ حُسُومٗاۖ فَتَرَى اَ۬لۡقَوۡمَ فِيهَا صَرۡعۭيٰ كَأَنَّهُمۡ أَعۡجَازُ نَخۡلٍ خَاوِيَةٖ"
        },
        {
            "chapter": 69,
            "verse": 8,
            "text": "فَهَل تَّر۪يٰ لَهُم مِّنۢ بَاقِيَةٖ"
        },
        {
            "chapter": 69,
            "verse": 9,
            "text": "وَجَآءَ فِرۡعَوۡنُ وَمَن قِبَلَهُۥ وَاَلۡمُؤۡتَفِكَٰتُ بِالۡخَاطِئَةِ"
        },
        {
            "chapter": 69,
            "verse": 10,
            "text": "فَعَصَوۡاْ رَسُولَ رَبِّهِمۡ فَأَخَذَهُمۡ أَخۡذَةٗ رَّابِيَةً"
        },
        {
            "chapter": 69,
            "verse": 11,
            "text": "إِنَّا لَمَّا طَغَا اَ۬لۡمَآءُ حَمَلۡنَٰكُمۡ فِي اِ۬لۡجَارِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 12,
            "text": "لِنَجۡعَلَهَا لَكُمۡ تَذۡكِرَةٗ وَتَعِيَهَآ أُذُنٞ وَٰعِيَةٞ"
        },
        {
            "chapter": 69,
            "verse": 13,
            "text": "۞فَإِذَا نُفِخَ فِي اِ۬لصُّورِ نَفۡخَةٞ وَٰحِدَةٞ"
        },
        {
            "chapter": 69,
            "verse": 14,
            "text": "وَحُمِلَتِ اِ۬لۡأَرۡضُ وَاَلۡجِبَالُ فَدُكَّتَا دَكَّةٗ وَٰحِدَةٗ"
        },
        {
            "chapter": 69,
            "verse": 15,
            "text": "فَيَوۡمَئِذٖ وَقَعَتِ اِ۬لۡوَاقِعَةُ"
        },
        {
            "chapter": 69,
            "verse": 16,
            "text": "وَاَنشَقَّتِ اِ۬لسَّمَآءُ فَهۡيَ يَوۡمَئِذٖ وَاهِيَةٞ"
        },
        {
            "chapter": 69,
            "verse": 17,
            "text": "وَاَلۡمَلَكُ عَلَىٰٓ أَرۡجَآئِهَاۚ وَيَحۡمِلُ عَرۡشَ رَبِّكَ فَوۡقَهُمۡ يَوۡمَئِذٖ ثَمَٰنِيَةٞ"
        },
        {
            "chapter": 69,
            "verse": 18,
            "text": "يَوۡمَئِذٖ تُعۡرَضُونَ لَا تَخۡفَىٰ مِنكُمۡ خَافِيَةٞ"
        },
        {
            "chapter": 69,
            "verse": 19,
            "text": "فَأَمَّا مَنۡ أُوتِيَ كِتَٰبَهُۥ بِيَمِينِهِۦ فَيَقُولُ هَآؤُمُ اُ۪قۡرَءُواْ كِتَٰبِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 20,
            "text": "إِنِّي ظَنَنتُ أَنِّي مُلَٰقٍ حِسَابِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 21,
            "text": "فَهۡوَ فِي عِيشَةٖ رَّاضِيَةٖ"
        },
        {
            "chapter": 69,
            "verse": 22,
            "text": "فِي جَنَّةٍ عَالِيَةٖ"
        },
        {
            "chapter": 69,
            "verse": 23,
            "text": "قُطُوفُهَا دَانِيَةٞ"
        },
        {
            "chapter": 69,
            "verse": 24,
            "text": "كُلُواْ وَاَشۡرَبُواْ هَنِيٓـَٔۢا بِمَآ أَسۡلَفۡتُمۡ فِي اِ۬لۡأَيَّامِ اِ۬لۡخَالِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 25,
            "text": "وَأَمَّا مَنۡ أُوتِيَ كِتَٰبَهُۥ بِشِمَالِهِۦ فَيَقُولُ يَٰلَيۡتَنِي لَمۡ أُوتَ كِتَٰبِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 26,
            "text": "وَلَمۡ أَدۡرِ مَا حِسَابِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 27,
            "text": "يَٰلَيۡتَهَا كَانَتِ اِ۬لۡقَاضِيَةَ"
        },
        {
            "chapter": 69,
            "verse": 28,
            "text": "مَآ أَغۡنَىٰ عَنِّي مَالِيَه"
        },
        {
            "chapter": 69,
            "verse": 29,
            "text": "هَّلَكَ عَنِّي سُلۡطَٰنِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 30,
            "text": "خُذُوهُ فَغُلُّوهُ"
        },
        {
            "chapter": 69,
            "verse": 31,
            "text": "ثُمَّ اَ۬لۡجَحِيمَ صَلُّوهُ"
        },
        {
            "chapter": 69,
            "verse": 32,
            "text": "ثُمَّ فِي سِلۡسِلَةٖ ذَرۡعُهَا سَبۡعُونَ ذِرَاعٗا فَاَسۡلُكُوهُ"
        },
        {
            "chapter": 69,
            "verse": 33,
            "text": "إِنَّهُۥ كَانَ لَا يُؤۡمِنُ بِاللَّهِ اِ۬لۡعَظِيمِ"
        },
        {
            "chapter": 69,
            "verse": 34,
            "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ اِ۬لۡمِسۡكِينِ"
        },
        {
            "chapter": 69,
            "verse": 35,
            "text": "فَلَيۡسَ لَهُ اُ۬لۡيَوۡمَ هَٰهُنَا حَمِيمٞ"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "وَلَا طَعَامٌ إِلَّا مِنۡ غِسۡلِينٖ"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "لَّا يَأۡكُلُهُۥٓ إِلَّا اَ۬لۡخَٰطِـُٔونَ"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "فَلَآ أُقۡسِمُ بِمَا تُبۡصِرُونَ"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "وَمَا لَا تُبۡصِرُونَ"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "إِنَّهُۥ لَقَوۡلُ رَسُولٖ كَرِيمٖ"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "وَمَا هُوَ بِقَوۡلِ شَاعِرٖۚ قَلِيلٗا مَّا تُؤۡمِنُونَ"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "وَلَا بِقَوۡلِ كَاهِنٖۚ قَلِيلٗا مَّا تَذَّكَّرُونَ"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "تَنزِيلٞ مِّن رَّبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "وَلَوۡ تَقَوَّلَ عَلَيۡنَا بَعۡضَ اَ۬لۡأَقَاوِيلِ"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "لَأَخَذۡنَا مِنۡهُ بِالۡيَمِينِ"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "ثُمَّ لَقَطَعۡنَا مِنۡهُ اُ۬لۡوَتِينَ"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "فَمَا مِنكُم مِّنۡ أَحَدٍ عَنۡهُ حَٰجِزِينَ"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "وَإِنَّهُۥ لَتَذۡكِرَةٞ لِّلۡمُتَّقِينَ"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "وَإِنَّا لَنَعۡلَمُ أَنَّ مِنكُم مُّكَذِّبِينَ"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "وَإِنَّهُۥ لَحَسۡرَةٌ عَلَى اَ۬لۡكٰ۪فِرِينَ"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "وَإِنَّهُۥ لَحَقُّ اُ۬لۡيَقِينِ"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "فَسَبِّحۡ بِاسۡمِ رَبِّكَ اَ۬لۡعَظِيمِ"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَأَلَ سَآئِلُۢ بِعَذَابٖ وَاقِعٖ"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكٰ۪فِرِينَ لَيۡسَ لَهُۥ دَافِعٞ"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ اَ۬للَّهِ ذِي اِ۬لۡمَعَارِجِ"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ اُ۬لۡمَلَٰٓئِكَةُ وَاَلرُّوحُ إِلَيۡهِ فِي يَوۡمٖ كَانَ مِقۡدَارُهُۥ خَمۡسِينَ أَلۡفَ سَنَةٖ"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَاَصۡبِرۡ صَبۡرٗا جَمِيلًا"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "إِنَّهُمۡ يَرَوۡنَهُۥ بَعِيدٗا"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَنَر۪ىٰهُ قَرِيبٗا"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "يَوۡمَ تَكُونُ اُ۬لسَّمَآءُ كَاَلۡمُهۡلِ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُونُ اُ۬لۡجِبَالُ كَاَلۡعِهۡنِ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيمٌ حَمِيمٗا"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يُبَصَّرُونَهُمۡۚ يَوَدُّ اُ۬لۡمُجۡرِمُ لَوۡ يَفۡتَدِي مِنۡ عَذَابِ يَوۡمِئِذِۢ بِبَنِيهِ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَٰحِبَتِهِۦ وَأَخِيهِ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِيلَتِهِ اِ۬لَّتِي تُـٔۡوِيهِ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَن فِي اِ۬لۡأَرۡضِ جَمِيعٗا ثُمَّ يُنجِيهِ"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّآۖ إِنَّهَا لَظۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةٞ لِّلشَّوۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُواْ مَنۡ أَدۡبَرَ وَتَوَلّۭيٰ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَأَوۡعۭيٰٓ"
        }
    ]
}