{
    "maqras": [
        {
            "chapter": 52,
            "verse": 24,
            "text": "وَيَطُوفُ عَلَيۡهِمۡ غِلۡمَانٞ لَّهُمۡ كَأَنَّهُمۡ لُؤۡلُؤٞ مَّكۡنُونٞ"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضٖ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُوٓاْ إِنَّا كُنَّا قَبۡلُ فِيٓ أَهۡلِنَا مُشۡفِقِينَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ اَ۬للَّهُ عَلَيۡنَا وَوَقَىٰنَا عَذَابَ اَ۬لسَّمُومِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "إِنَّا كُنَّا مِن قَبۡلُ نَدۡعُوهُۖ إِنَّهُۥ هُوَ اَ۬لۡبَرُّ اُ۬لرَّحِيمُ"
        },
        {
            "chapter": 52,
            "verse": 29,
            "text": "۞فَذَكِّرۡ فَمَآ أَنتَ بِنِعۡمَتِ رَبِّكَ بِكَاهِنٖ وَلَا مَجۡنُونٍ"
        },
        {
            "chapter": 52,
            "verse": 30,
            "text": "أَمۡ يَقُولُونَ شَاعِرٞ نَّتَرَبَّصُ بِهِۦ رَيۡبَ اَ۬لۡمَنُونِ"
        },
        {
            "chapter": 52,
            "verse": 31,
            "text": "قُلۡ تَرَبَّصُواْ فَإِنِّي مَعَكُم مِّنَ اَ۬لۡمُتَرَبِّصِينَ"
        },
        {
            "chapter": 52,
            "verse": 32,
            "text": "أَمۡ تَأۡمُرۡهُمۡ أَحۡلَٰمُهُم بِهَٰذَآۚ أَمۡ هُمۡ قَوۡمٞ طَاغُونَ"
        },
        {
            "chapter": 52,
            "verse": 33,
            "text": "أَمۡ يَقُولُونَ تَقَوَّلَهُۥۚ بَل لَّا يُؤۡمِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 34,
            "text": "فَلۡيَأۡتُواْ بِحَدِيثٖ مِّثۡلِهِۦٓ إِن كَانُواْ صَٰدِقِينَ"
        },
        {
            "chapter": 52,
            "verse": 35,
            "text": "أَمۡ خُلِقُواْ مِنۡ غَيۡرِ شَيۡءٍ أَمۡ هُمُ اُ۬لۡخَٰلِقُونَ"
        },
        {
            "chapter": 52,
            "verse": 36,
            "text": "أَمۡ خَلَقُواْ اُ۬لسَّمَٰوَٰتِ وَاَلۡأَرۡضَۚ بَل لَّا يُوقِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 37,
            "text": "أَمۡ عِندَهُمۡ خَزَآئِنُ رَبِّكَ أَمۡ هُمُ اُ۬لۡمُصَيۡطِرُونَ"
        },
        {
            "chapter": 52,
            "verse": 38,
            "text": "أَمۡ لَهُمۡ سُلَّمٞ يَسۡتَمِعُونَ فِيهِۖ فَلۡيَأۡتِ مُسۡتَمِعُهُم بِسُلۡطَٰنٖ مُّبِينٍ"
        },
        {
            "chapter": 52,
            "verse": 39,
            "text": "أَمۡ لَهُ اُ۬لۡبَنَٰتُ وَلَكُمُ اُ۬لۡبَنُونَ"
        },
        {
            "chapter": 52,
            "verse": 40,
            "text": "أَمۡ تَسۡـَٔلُهُمۡ أَجۡرٗا فَهُم مِّن مَّغۡرَمٖ مُّثۡقَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 41,
            "text": "أَمۡ عِندَهُمُ اُ۬لۡغَيۡبُ فَهُمۡ يَكۡتُبُونَ"
        },
        {
            "chapter": 52,
            "verse": 42,
            "text": "أَمۡ يُرِيدُونَ كَيۡدٗاۖ فَاَلَّذِينَ كَفَرُواْ هُمُ اُ۬لۡمَكِيدُونَ"
        },
        {
            "chapter": 52,
            "verse": 43,
            "text": "أَمۡ لَهُمۡ إِلَٰهٌ غَيۡرُ اُ۬للَّهِۚ سُبۡحَٰنَ اَ۬للَّهِ عَمَّا يُشۡرِكُونَ"
        },
        {
            "chapter": 52,
            "verse": 44,
            "text": "وَإِن يَرَوۡاْ كِسۡفٗا مِّنَ اَ۬لسَّمَآءِ سَاقِطٗا يَقُولُواْ سَحَابٞ مَّرۡكُومٞ"
        },
        {
            "chapter": 52,
            "verse": 45,
            "text": "فَذَرۡهُمۡ حَتَّىٰ يُلَٰقُواْ يَوۡمَهُمُ اُ۬لَّذِي فِيهِ يَصۡعَقُونَ"
        },
        {
            "chapter": 52,
            "verse": 46,
            "text": "يَوۡمَ لَا يُغۡنِي عَنۡهُمۡ كَيۡدُهُمۡ شَيۡـٔٗا وَلَا هُمۡ يُنصَرُونَ"
        },
        {
            "chapter": 52,
            "verse": 47,
            "text": "وَإِنَّ لِلَّذِينَ ظَلَمُواْ عَذَابٗا دُونَ ذَٰلِكَ وَلَٰكِنَّ أَكۡثَرَهُمۡ لَا يَعۡلَمُونَ"
        },
        {
            "chapter": 52,
            "verse": 48,
            "text": "وَاَصۡبِر لِّحُكۡمِ رَبِّكَ فَإِنَّكَ بِأَعۡيُنِنَاۖ وَسَبِّحۡ بِحَمۡدِ رَبِّكَ حِينَ تَقُومُ"
        },
        {
            "chapter": 52,
            "verse": 49,
            "text": "وَمِنَ اَ۬لَّيۡلِ فَسَبِّحۡهُ وَإِدۡبَٰرَ اَ۬لنُّجُومِ"
        },
        {
            "chapter": 53,
            "verse": 1,
            "text": "وَاَلنَّجۡمِ إِذَا هَوۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَاحِبُكُمۡ وَمَا غَوۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا يَنطِقُ عَنِ اِ۬لۡهَوۭيٰٓ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "إِنۡ هُوَ إِلَّا وَحۡيٞ يُوحۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهُۥ شَدِيدُ اُ۬لۡقُوۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُو مِرَّةٖ فَاَسۡتَوۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهۡوَ بِالۡأُفُقِ اِ۬لۡأَعۡلۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلّۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوۡسَيۡنِ أَوۡ أَدۡنۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَأَوۡحَىٰٓ إِلَىٰ عَبۡدِهِۦ مَآ أَوۡحۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ اَ۬لۡفُؤَادُ مَا رَأ۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "أَفَتُمَٰرُونَهُۥ عَلَىٰ مَا يَر۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدۡ رَء۪اهُ نَزۡلَةً أُخۡر۪يٰ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِندَ سِدۡرَةِ اِ۬لۡمُنتَهۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِندَهَا جَنَّةُ اُ۬لۡمَأۡوۭيٰٓ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "إِذۡ يَغۡشَى اَ۬لسِّدۡرَةَ مَا يَغۡشۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ اَ۬لۡبَصَرُ وَمَا طَغۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدۡ رَأ۪يٰ مِنۡ ءَايَٰتِ رَبِّهِ اِ۬لۡكُبۡر۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "أَفَرَءَيۡتُمُ اُ۬للَّٰتَ وَاَلۡعُزّۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنَوٰةَ اَ۬لثَّالِثَةَ اَ۬لۡأُخۡر۪يٰٓ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "أَلَكُمُ اُ۬لذَّكَرُ وَلَهُ اُ۬لۡأُنثۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلۡكَ إِذٗا قِسۡمَةٞ ضِيزۭيٰٓ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "إِنۡ هِيَ إِلَّآ أَسۡمَآءٞ سَمَّيۡتُمُوهَآ أَنتُمۡ وَءَابَآؤُكُم مَّآ أَنزَلَ اَ۬للَّهُ بِهَا مِن سُلۡطَٰنٍۚ إِن يَتَّبِعُونَ إِلَّا اَ۬لظَّنَّ وَمَا تَهۡوَى اَ۬لۡأَنفُسُۖ وَلَقَد جَّآءَهُم مِّن رَّبِّهِمِ اِ۬لۡهُدۭيٰٓ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "أَمۡ لِلۡإِنسَٰنِ مَا تَمَنّۭيٰ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلَّهِ اِ۬لۡأٓخِرَةُ وَاَلۡأُولۭيٰ"
        }
    ]
}