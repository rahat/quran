{
    "rukus": [
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَآ ءَالَ لُوطٍ اِ۬لۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمۡ قَوۡمٞ مُّنكَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُواْ بَلۡ جِئۡنَٰكَ بِمَا كَانُواْ فِيهِ يَمۡتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَيۡنَٰكَ بِالۡحَقِّ وَإِنَّا لَصَٰدِقُونَ"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَأَسۡرِ بِأَهۡلِكَ بِقِطۡعٖ مِّنَ اَ۬لَّيۡلِ وَاَتَّبِعۡ أَدۡبَٰرَهُمۡ وَلَا يَلۡتَفِتۡ مِنكُمۡ أَحَدٞ وَاَمۡضُواْ حَيۡثُ تُؤۡمَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَيۡنَآ إِلَيۡهِ ذَٰلِكَ اَ۬لۡأَمۡرَ أَنَّ دَابِرَ هَٰٓؤُلَآءِ مَقۡطُوعٞ مُّصۡبِحِينَ"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَآ أَهۡلُ اُ۬لۡمَدِينَةِ يَسۡتَبۡشِرُونَ"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَٰٓؤُلَآءِ ضَيۡفِي فَلَا تَفۡضَحُونِ"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَاَتَّقُواْ اُ۬للَّهَ وَلَا تُخۡزُونِ"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُوٓاْ أَوَلَمۡ نَنۡهَكَ عَنِ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَٰٓؤُلَآءِ بَنَاتِيٓ إِن كُنتُمۡ فَٰعِلِينَ"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمۡرُكَ إِنَّهُمۡ لَفِي سَكۡرَتِهِمۡ يَعۡمَهُونَ"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتۡهُمُ اُ۬لصَّيۡحَةُ مُشۡرِقِينَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلۡنَا عَٰلِيَهَا سَافِلَهَا وَأَمۡطَرۡنَا عَلَيۡهِمۡ حِجَارَةٗ مِّن سِجِّيلٍ"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَٰتٖ لِّلۡمُتَوَسِّمِينَ"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِيلٖ مُّقِيمٍ"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَةٗ لِّلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وَإِن كَانَ أَصۡحَٰبُ اُ۬لۡأَيۡكَةِ لَظَٰلِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَاَنتَقَمۡنَا مِنۡهُمۡ وَإِنَّهُمَا لَبِإِمَامٖ مُّبِينٖ"
        }
    ]
}