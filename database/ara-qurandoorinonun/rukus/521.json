{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَٰا۬نتُمۡ أَشَدُّ خَلۡقًا أَمِ اِ۬لسَّمَآءُۚ بَنۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمۡكَهَا فَسَوّۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَاَلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحۭىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَاَلۡجِبَالَ أَرۡسۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ اِ۬لطَّآمَّةُ اُ۬لۡكُبۡر۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوۡمَ يَتَذَكَّرُ اُ۬لۡإِنسَٰنُ مَا سَعۭيٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ اِ۬لۡجَحِيمُ لِمَن يَر۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ اَ۬لۡحَيَوٰةَ اَ۬لدُّنۡيۭا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ اَ۬لۡجَحِيمَ هِيَ اَ۬لۡمَأۡوۭيٰ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى اَ۬لنَّفۡسَ عَنِ اِ۬لۡهَوۭيٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ اَ۬لۡجَنَّةَ هِيَ اَ۬لۡمَأۡوۭيٰ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "۞يَسۡـَٔلُونَكَ عَنِ اِ۬لسَّاعَةِ أَيَّانَ مُرۡسۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكۡر۪ىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَىٰ رَبِّكَ مُنتَهۭىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخۡشۭىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوٓاْ إِلَّا عَشِيَّةً أَوۡ ضُحۭىٰهَا"
        }
    ]
}