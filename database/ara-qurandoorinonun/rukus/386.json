{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وَاَلصَّٰٓفَّٰتِ صَفّٗا"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فَاَلزَّٰجِرَٰتِ زَجۡرٗا"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فَاَلتَّٰلِيَٰتِ ذِكۡرًا"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إِنَّ إِلَٰهَكُمۡ لَوَٰحِدٞ"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رَّبُّ اُ۬لسَّمَٰوَٰتِ وَاَلۡأَرۡضِ وَمَا بَيۡنَهُمَا وَرَبُّ اُ۬لۡمَشَٰرِقِ"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إِنَّا زَيَّنَّا اَ۬لسَّمَآءَ اَ۬لدُّنۡيۭا بِزِينَةِ اِ۬لۡكَوَاكِبِ"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وَحِفۡظٗا مِّن كُلِّ شَيۡطَٰنٖ مَّارِدٖ"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لَّا يَسۡمَعُونَ إِلَى اَ۬لۡمَلَإِ اِ۬لۡأَعۡلَىٰ وَيُقۡذَفُونَ مِن كُلِّ جَانِبٖ"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دُحُورٗاۖ وَلَهُمۡ عَذَابٞ وَاصِبٌ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إِلَّا مَنۡ خَطِفَ اَ۬لۡخَطۡفَةَ فَأَتۡبَعَهُۥ شِهَابٞ ثَاقِبٞ"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فَاَسۡتَفۡتِهِمۡ أَهُمۡ أَشَدُّ خَلۡقًا أَم مَّنۡ خَلَقۡنَآۚ إِنَّا خَلَقۡنَٰهُم مِّن طِينٖ لَّازِبِۢ"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بَلۡ عَجِبۡتَ وَيَسۡخَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وَإِذَا ذُكِّرُواْ لَا يَذۡكُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وَإِذَا رَأَوۡاْ ءَايَةٗ يَسۡتَسۡخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وَقَالُوٓاْ إِنۡ هَٰذَآ إِلَّا سِحۡرٞ مُّبِينٌ"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أَٰ۟ذَا مُتۡنَا وَكُنَّا تُرَابٗا وَعِظَٰمًا أَٰ۟نَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أَوَ ءَابَآؤُنَا اَ۬لۡأَوَّلُونَ"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قُلۡ نَعَمۡ وَأَنتُمۡ دَٰخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فَإِنَّمَا هِيَ زَجۡرَةٞ وَٰحِدَةٞ فَإِذَا هُمۡ يَنظُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وَقَالُواْ يَٰوَيۡلَنَا هَٰذَا يَوۡمُ اُ۬لدِّينِ"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هَٰذَا يَوۡمُ اُ۬لۡفَصۡلِ اِ۬لَّذِي كُنتُم بِهِۦ تُكَذِّبُونَ"
        }
    ]
}