{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "سَبِّحِ اِ۪سۡمَ رَبِّكَ اَ۬لۡأَعۡلَى"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "اَ۬لَّذِي خَلَقَ فَسَوّۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "وَاَلَّذِي قَدَّرَ فَهَدۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "وَاَلَّذِيٓ أَخۡرَجَ اَ۬لۡمَرۡعۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "فَجَعَلَهُۥ غُثَآءً أَحۡوۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "سَنُقۡرِئُكَ فَلَا تَنسۭيٰٓ"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "إِلَّا مَا شَآءَ اَ۬للَّهُۚ إِنَّهُۥ يَعۡلَمُ اُ۬لۡجَهۡرَ وَمَا يَخۡفۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "وَنُيَسِّرُكَ لِلۡيُسۡر۪يٰ"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "فَذَكِّرۡ إِن نَّفَعَتِ اِ۬لذِّكۡر۪يٰ"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "سَيَذَّكَّرُ مَن يَخۡشۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "وَيَتَجَنَّبُهَا اَ۬لۡأَشۡقَى"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "اَ۬لَّذِي يَصۡلَى اَ۬لنَّارَ اَ۬لۡكُبۡر۪يٰ"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحۡيۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "قَدۡ أَفۡلَحَ مَن تَزَكّۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "وَذَكَرَ اَ۪سۡمَ رَبِّهِۦ فَصَلّۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بَلۡ يُؤۡثِرُونَ اَ۬لۡحَيَوٰةَ اَ۬لدُّنۡيۭا"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "وَاَلۡأٓخِرَةُ خَيۡرٞ وَأَبۡقۭيٰٓ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "إِنَّ هَٰذَا لَفِي اِ۬لصُّحُفِ اِ۬لۡأُولۭيٰ"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صُحُفِ إِبۡرَٰهِيمَ وَمُوسۭيٰ"
        }
    ]
}