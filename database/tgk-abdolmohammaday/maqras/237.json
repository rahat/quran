{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Номи Парвардигори бузурги худро ба покӣ ёд кун"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "он ки офарид ва дурустандом кард"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ва он ки андоза муъайян кард. Сипас роҳ намуд"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ва он ки чарогоҳҳоро рӯёнид"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "сипас хушку сиёҳ гардонид"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ба зудӣ барои ту бихонем, мабод, ки фаромӯш кунӣ"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ғайри он чи Худо бихоҳад. Ӯст, ки ошкорову ниҳонро медонад"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ва туро ба дини осон тавфиқ диҳем"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Агар панд, доданат суд кунад, панд деҳ"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Он ки метарсад, панд мегирад"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ва бадбахт аз он дурӣ мегирад"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "он ки ба оташи бузурги ҷаҳаннам дарафтад"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ва дар он ҷо на бимирад ва на зинда бошад"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Албатта покон наҷот ёфтанд"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "онон, ки номи Парвардигори худро бар забон оварданд ва намоз гузориданд"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Оре, шумо зиндагии ин ҷаҳонро ихтиёр мекунед"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "ҳол он ки охират беҳтару пояндатар аст"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ин сухан дар саҳифаҳои нахустин аст"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "саҳифаҳои Иброҳиму Мӯсо"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Оё достони ғошия ба ту расидааст"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Дар он рӯз ваҳшат дар чеҳраҳо падидор аст"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "талошкардаву ранҷдида"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "дар оташи сӯзон дарафтанд"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "аз он чашмаи бисёр гарм обашон диҳанд"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "таъоме ғайри хор надоранд"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "ки на фарбеҳ мекунад ва на дафъи гуруснагӣ"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Ва дар он рӯз чеҳраҳое тоза бошанд"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "аз кори худ хушнуд"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "дар биҳиште олимақом"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "ки дар он сухани беҳуда нашнавӣ"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "ва дар он чашмасорҳо равон бошад"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "ва тахтҳое баланд зада"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "ва кӯзаҳое ниҳода"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "ва болишҳое дар канори ҳам чида"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "ва фаршҳое паҳн карда"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Оё ба шутур наменигаранд, ки чӣ гуна офарида шуда"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ва ба осмон, ки чӣ гуна бардошташуда"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ва ба кӯҳҳо, ки чӣ гуна баланд кашидашуда"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ва ба замин, ки чӣ сон густурда шуда"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Пас панд деҳ ки ту панддиҳандае ҳастӣ"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Ту бар онон фармонраво нестӣ"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Магар он кас кӣ рӯйгардон шуд ва кофир шуд"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Пас Худояш ба азоби бузургтар азоб мекунад"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Албатта бозгашташон ба сӯи Мост"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Сипас ҳисобашон бо Мост"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Савганд ба сапедаи субҳ"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "ва савганд ба шабҳои даҳгона (даҳ шаби Зулҳиҷҷа)"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "ва савганд ба ҷуфту тоқ"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "ва савганд ба шаб, чун рӯй ба рафтан ниҳад"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Оё дар ин зикркардашудаҳо хирадмандро савгандҳои кофист"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Оё надидаӣ, ки Парвардигори ту бо қавми Од чӣ кард"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Бо Ирам, ки сутунҳо дошт"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ва монанди он дар ҳеҷ шаҳре офарида нашуда буд"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Ва қавми Самуд, ки дар он водӣ сангро мебуриданд"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Ва қавми Фиръавн, он дорандаи мехҳо"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "онҳо дар шаҳрҳо аз ҳад таҷовуз карданд"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "ва дар онҳо бисёр фасод карданд"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Ва Парвардигори ту тозиёнаи азобро бар сарашон фуруд овард"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Зеро Парвардигорат дар камингоҳ аст"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Аммо одамӣ, чута Парвардигораш биёзмояд ва гиромиаш дорад ва неъматаш диҳад, мегӯяд: «Парвардигори ман маро гиромӣ дошт»"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ва чун биёзмоядаш ва ризқ бар ӯ танг гирад, мегӯяд: «Парвардигори ман маро хор сохт»"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "На чунон аст. Шумо ятимро гиромӣ намедоред"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "ва якдигарро ба таъом додани мискиш тарғиб намекунед"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "ва меросро ҳарисона мехӯред"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "ва молро фаровон дӯст доред"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Оре, чун замин шикаста шавад ва шикаста шавад"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "ва амри Парвардигори ту фаро расад ва фариштагон саф дар саф шаванд"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "ва дар он рӯз ҷаҳаннамро ҳозир оранд, одамӣ панд гирад. Ва чӣ ҷои панд гирифтан бошад"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Мегӯяд: «Эй кош ки барои ҳаёти ҷовидонаи худ пешопеш чизе мефиристодам»"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Дар он рӯз касе чун азоби ӯ азоб накунад"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "ва монанди занҷири ӯ ба занҷир накашад"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Эй рӯҳи оромишёфта"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "хушнуду писандида ба сӯи Парвардигорат бозгард"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "ва дар зумраи бандагони Ман дохил шав"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "ва ба биҳишти Ман дарой"
        }
    ]
}