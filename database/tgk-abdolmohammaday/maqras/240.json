{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Оё намедонад, ки чун он чӣ дар гӯрҳост, зинда гардад"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "ва он чӣ дар дилҳо ниҳон аст, ошкор шавад"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Парвардигорашон дар он рӯз аз ҳолашон огоҳ аст"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Қориъаҳ"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Чист қориъаҳ"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "ва ту чӣ донӣ, ки қориъаҳ чист"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Рӯзест, ки мардум чун парвонагон пароканда бошанд"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "ва кӯҳҳо чун пашми задашуда"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Аммо ҳар кӣ паллаи некиҳои тарозуяш вазнин бошад"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Пас ӯ дар айши писандида бошад"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "ва аммо ҳар кӣ сабук шуд паллаи некиҳои тарозуяш"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "ҷойгоҳаш дар ҳовияҳ аст"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ва ту чӣ донӣ, ки ҳовияҳ чист"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Оташест дар ниҳояти гармӣ"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Ба ғафлат кашид шуморо фахр кардан ба бисёрии молу фарзанд"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "то ба гӯрҳо расидед"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Ҳаққо, ки ба зудӣ хоҳед донист"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Боз ҳам ҳаққо, ки ба зудӣ хоҳед донист"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Ҳаққо агар аз рӯи яқин бидонед"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "албатта, ҷаҳаннамро хоҳед дид"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Сипас ба чашми яқинаш хоҳед дид"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "сипас дар он рӯз шуморо аз неъматҳои дунявӣ бозхост мекунанд"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Савганд ба ин замон"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "ки одамӣ дар зиён аст"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "ғайри онҳо, ки имон оварданд ва корҳои шоиста карданд ва якдигарро ба ҳақ супориш карданд ва якдигарро ба сабр супориш карданд"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Вой бар ҳар ғайбаткунандаи айбҷӯе"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "он ки моле ҷамъ кард ва ҳисоби он нигаҳ дошт"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Мепиндорад, ки дороияш ҷовидонаш гардонад"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "На чунин аст! ки Ӯро дар ҳутамаҳ андозанд"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Ва ту чӣ донӣ, ки ҳутамаҳ чист"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Оташи афрӯхтаи Худост"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "ки бар дилҳо ғалаба меёбад"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Он оташ аз ҳар сӯ дар миёнашон гирифтааст"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "дар сутунҳои дарози оташӣ дароварда шудааст"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Оё надидаӣ, ки Парвардигорат бо асҳоби фил чӣ кард"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Оё макрашонро ботил насохт"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Ва бар сари онҳо паррандагоне села - села фиристод"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "то онҳоро бо сиҷҷил сангборон карданд"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Ва ононро чун коҳи пасмонда дар охур сохт"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Барои шукри улфату амни Қурайш"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "улфату амнашон дар сафари зимистониву тобистонӣ»"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Пас бояд Парвардигори ин хонаро (Каъбаро) бипарастанд"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "он ки ба ҳангоми гуруснагӣ таъомашон дод ва аз хавф дар амонашон дошт"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Оё онро, ки рӯзи ҷазоро дурӯғ мешумурад, дидӣ"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Ӯ ҳамон касест, ки ятимро ба иҳонат (хорӣ) меронад"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "ва мардумро ба таъом додан ба бенаво тарғиб намекунад"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Пас вой бар он намозгузороне"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "ки дар намози худ саҳл ангоранд (дар ғафлатанд)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "онон, ки риё мекунанд"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "ва аз додани закот саркашӣ мекунанд"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Мо кавсарро ба ту ато кардем"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Пас барои Парвардигорат намоз бихон ва қурбонӣ кун"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "ки бадхоҳи ту худ абтар аст"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "Бигӯ: «Эй кофирон"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ман чизеро, ки шумо мепарастед, намепарастам"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "ва шумо низ чизеро, ки ман мепарастам, намепарастед"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "ва ман парастандаи чизе, ки шумо мепарастед, нестам"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "ва шумо парастандаи чизе, ки ман мепарастам, нестед"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Шуморо дини худ ва маро дини худ!»"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Чун ёрии Худову пирӯзӣ ояд"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "ва мардумро бубинӣ, ки гурӯҳ-гурӯҳ ба дини Худо медароянд"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "пас ба ситоиши Парвардигорат тасбеҳ гӯй ва аз Ӯ бахшоиш бихоҳ, ки Ӯ тавбапазир аст"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Дастҳои Абулаҳаб бурида бод ва ҳалок бар ӯ бод"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Моли ӯ ва он чӣ ба даст оварда буд, ба ҳолаш суд накард"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Ба зудӣ ба оташе шӯълавар дарояд"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "ва занаш ҳезумкаш аст"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "ва бар гардан ресмоне аз лифи (пӯсти) хурмо дорад"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "Бигӯ: «Ӯст Худои якто"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Худое, ки дар ҳоҷат ба Ӯ рӯ кунанд"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "на зоида аст ва на зоида шуда"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "ва на ҳеҷ кас ҳамтои Ӯст!»"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "Бигӯ: «Ба Парвардигори субҳгоҳ паноҳ мебарам"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "аз шарри он чӣ биёфаридааст"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "ва аз шарри шаб чун дарояд"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "ва аз шарри ҷодугароне, ки дар гиреҳҳо афсун медаманд"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ва аз шарри ҳасуд чун ҳасад мекунад!»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "Бигӯ: «Ба Парвардигори мардум паноҳ мебарам"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "фармонравои мардум"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Худои мардум"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "аз шарру васвасагари пинҳоншаванда"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "он кӣ дар дилҳои мардум васваса мекунад"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "хоҳ аз ҷинниён бошад ё аз одамиён!»"
        }
    ]
}