{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Оё онро, ки рӯзи ҷазоро дурӯғ мешумурад, дидӣ"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Ӯ ҳамон касест, ки ятимро ба иҳонат (хорӣ) меронад"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "ва мардумро ба таъом додан ба бенаво тарғиб намекунад"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Пас вой бар он намозгузороне"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "ки дар намози худ саҳл ангоранд (дар ғафлатанд)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "онон, ки риё мекунанд"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "ва аз додани закот саркашӣ мекунанд"
        }
    ]
}