{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Оре, савганд ба моҳ"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Ва савганд ба шаб, чун рӯй ба рафтан орад"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "ва савганд ба субҳ чун парда барафканад"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "ки ин яке аз ҳодисаҳои бузург аст"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Тарсонандаи одамиён аст"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Барои ҳар кас аз шумо, ки хоҳад, пеш ояд (бо амали нек) ё аз пай равад (бо куфру нофармонӣ)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Ҳар кас гаравгони корест, ки кардааст"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "ғайри аҳли саъодат"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "ки дар биҳиштҳо нишастаанд ва мепурсанд"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "аз гуноҳкорон"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "ки чӣ чиз шуморо ба ҷаҳаннам кашонид"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Мегӯянд: «Мо аз намозгузорон набудем"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "ва ба дарвешон таъом намедодем"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "ва бо онон, ки сухани ботил мегуфтанд, ҳамовоз мешудем"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "ва рӯзи қиёматро дурӯғ мешуморидем"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "то марги мо фаро расид»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Пас шафоъати шафоъаткунандагон фоидаашон набахшад"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Чӣ шудааст, ки аз ин панд рӯй мегардонанд"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Монанди харони рамида"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ки аз шер мегурезанд"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "балки ҳар як аз онҳо мехоҳад, ки номаҳое ку шода ба ӯ дода шавад"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Оре, ки аз охират наметарсанд"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Оре, ки ин Қуръон пандест"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "ҳар ки хоҳад онро бихонад"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Ва панд намегиранд, бе он ки Худо хоҳад. Ӯ шоёни он аст, ки аз Ӯ битарсанд. Ва ӯ шоёни бахшоидан аст"
        }
    ]
}