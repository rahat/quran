{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Чун хуршед бефурӯғ (хира) шавад"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ва чун ситорагон фурӯ резанд"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "ва чун кӯҳҳо аз ҷои худ беҷо бишаванд"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "ва чун шутурони ҳомила ба ҳоли худ гузошта шаванд"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "ва чун ҷонварони ваҳшӣ ҷамъ оварда шаванд"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "ва чун дарёҳо оташ гиранд"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "ва чун рӯҳҳо бо танҳо якҷоя гардганд"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "ва чун аз духтари зинда ба гӯр шуда пурсида шавад, ки"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "ба чӣ гуноҳе кушта шудааст"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "ва чун саҳифаҳо боз шаванд"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "ва чун осмон аз ҷои худ канда шавад"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "ва чун ҷаҳаннам афрӯхта гардад"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ва чун биҳиштро пеш оваранд"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "ҳар кас бидонад, ки чӣ ҳозир овардааст"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Савганд ба ситорагони бозгарданда"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "сайркунандаи ғойбшаванда"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "ва савганд ба шаб, чун торик шавад"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ва савганд ба субҳ чун бидамад"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "ки ин сухани расуле бузургвор (Ҷибрил (а)) аст"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "нерӯманд, дар назди Худованди арш соҳибобрӯ"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "он ҷо (дар назди Худо) фармонравои боваринокаст"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Ва ҳамсӯҳбати шумо девона нест"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Албатта Ӯро (Ҷибрилро) дар уфуқи равшан дидааст"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Ва он чиро аз ғайб ба ӯ гӯянд, дареғ намедорад"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Ва он сухан сухани шайтони раҷим нест"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Пас ба куҷо меравед"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Ин китоб пандест барои ҷаҳониён"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "барои ҳар кас аз шумо, ки бихоҳад ба роҳи рост афтад"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ва шумо намехоҳед, ғайри он чиро, ки Парвардигори ҷаҳониён хоста бошад"
        }
    ]
}