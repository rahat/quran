{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Аз чӣ чиз (ҳамдигарро) мепурсанд"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Аз он хабари бузург, (қиёмат)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ки дар он ихтилоф мекунанд"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Оре, ба зудӣ хоҳад донист"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Боз ҳам, оре, ба зудӣ хоҳанд донист"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Оё Мо заминрро бистаре насохтем"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Ва кӯҳҳоро мехҳое"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ва шуморо ҷуфт-ҷуфт офаридем"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Ва хобатонро оссишатон гардонидем"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Ва шабро пӯшишатон қарор додем"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Ва рӯзро вақти талаби маъишат. (касб)"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ва бар болои саратон ҳафт осмони устувор бино кардем"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Ва чароғе равшан офаридем. (офтоб)"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Аз абрҳои боронзой обе фаровон нозил кардем"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "то бо он донаву набот бирӯёнем"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "ва бӯстонҳои анбӯҳ (сердарахт)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Албатта рӯзи доварӣ рӯзест муъайян"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Рӯзе, ки дар сур дамида шавад, ва шумо гурӯҳгурӯҳ биёед"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Осмон шикофта шавад ва ҳар шикоф даре бошад"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Ва куҳҳо равон шаванд ва сароб гарданд"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Ҷаҳаннам дар интизор бошад"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Саркашонро бозгаштангоҳест"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Замоне дароз дар он ҷо бошанд"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "На хунукӣ чашанду на об"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "фақат оби ҷӯшону хуну чирк. (нӯшанд)"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Ин ҷазоест мувофиқи кирдор"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Зеро онон ба рӯзи ҳисоб умед надоштанд"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ва оёти Моро ба сахтӣ дурӯғ мебароварданд"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Ва Мо ҳама чизро дар, китобе шумора кардаем"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Пас бичашед, ки фақат бар азоби шумо хоҳем афзуд"
        }
    ]
}