{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Савганд ба осмону ба он чӣ дар шаб ояд"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Ва ту чӣ донӣ, ки он чӣ дар шаб ояд, чист"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Ситораест дурахшанда"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Ҳеҷ кас нест, кӣ бар ӯ нигаҳбоне набошад"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Пас одамӣ бингарад, ки аз чӣ чиз офариша шудааст"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Аз обе ҷаҳанда офарида шудааст"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "ки аз миёни пушту сина берун меояд"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Худо ба бозгардонидани ӯ тавоност"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "рӯзе, ки розҳо (сирҳо) ошкор мешаванд"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Ӯро на қувватест, ва на ёваре"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Қасам ба осмони бозборанда"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Қасам ба замини руёни шикофхӯрда, (барои гиёҳ)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ки ин китоб ҳақро аз ботил ҷудо кунад"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "ва сухани ҳазл нест"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Онон ҳилае меандешанд"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "ва Ман ҳам ҳилае меандешам"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Пас кофиронро мӯҳлат деҳ андак мӯҳлаташон деҳ"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Номи Парвардигори бузурги худро ба покӣ ёд кун"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "он ки офарид ва дурустандом кард"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ва он ки андоза муъайян кард. Сипас роҳ намуд"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ва он ки чарогоҳҳоро рӯёнид"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "сипас хушку сиёҳ гардонид"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ба зудӣ барои ту бихонем, мабод, ки фаромӯш кунӣ"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ғайри он чи Худо бихоҳад. Ӯст, ки ошкорову ниҳонро медонад"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ва туро ба дини осон тавфиқ диҳем"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Агар панд, доданат суд кунад, панд деҳ"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Он ки метарсад, панд мегирад"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ва бадбахт аз он дурӣ мегирад"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "он ки ба оташи бузурги ҷаҳаннам дарафтад"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ва дар он ҷо на бимирад ва на зинда бошад"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Албатта покон наҷот ёфтанд"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "онон, ки номи Парвардигори худро бар забон оварданд ва намоз гузориданд"
        }
    ]
}