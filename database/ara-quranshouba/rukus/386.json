{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وَٱلصَّٰٓفَّٰتِ صَفࣰّ ا"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فَٱلزَّٰجِرَٰتِ زَجۡرࣰ ا"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فَٱلتَّٰلِيَٰتِ ذِكۡرًا"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إِنَّ إِلَٰهَكُمۡ لَوَٰحِدࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رَّبُّ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَا وَرَبُّ ٱلۡمَشَٰرِقِ"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إِنَّا زَيَّنَّا ٱلسَّمَآءَ ٱلدُّنۡيَا بِزِينَةٍ ٱلۡكَوَاكِبَ"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وَحِفۡظࣰ ا مِّن كُلِّ شَيۡطَٰنࣲ مَّارِدࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لَّا يَسۡمَعُونَ إِلَى ٱلۡمَلَإِ ٱلۡأَعۡلَىٰ وَيُقۡذَفُونَ مِن كُلِّ جَانِبࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دُحُورࣰ اۖ وَلَهُمۡ عَذَابࣱ وَاصِبٌ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إِلَّا مَنۡ خَطِفَ ٱلۡخَطۡفَةَ فَأَتۡبَعَهُۥ شِهَابࣱ ثَاقِبࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فَٱسۡتَفۡتِهِمۡ أَهُمۡ أَشَدُّ خَلۡقًا أَم مَّنۡ خَلَقۡنَآۚ إِنَّا خَلَقۡنَٰهُم مِّن طِينࣲ لَّازِبِۭ"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بَلۡ عَجِبۡتَ وَيَسۡخَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وَإِذَا ذُكِّرُواْ لَا يَذۡكُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وَإِذَا رَأَوۡاْ ءَايَةࣰ يَسۡتَسۡخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وَقَالُوٓاْ إِنۡ هَٰذَآ إِلَّا سِحۡرࣱ مُّبِينٌ"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أَءِذَا مُتۡنَا وَكُنَّا تُرَابࣰ ا وَعِظَٰمًا أَءِنَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أَوَ ءَابَآؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قُلۡ نَعَمۡ وَأَنتُمۡ دَٰخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فَإِنَّمَا هِيَ زَجۡرَةࣱ وَٰحِدَةࣱ فَإِذَا هُمۡ يَنظُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وَقَالُواْ يَٰوَيۡلَنَا هَٰذَا يَوۡمُ ٱلدِّينِ"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هَٰذَا يَوۡمُ ٱلۡفَصۡلِ ٱلَّذِي كُنتُم بِهِۦ تُكَذِّبُونَ"
        }
    ]
}