{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "عَمَّ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ ٱلنَّبَإِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ٱلَّذِي هُمۡ فِيهِ مُخۡتَلِفُونَ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَيَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَيَعۡلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ مِهَٰدࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَٱلۡجِبَالَ أَوۡتَادࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَخَلَقۡنَٰكُمۡ أَزۡوَٰجࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَجَعَلۡنَا نَوۡمَكُمۡ سُبَاتࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَجَعَلۡنَا ٱلَّيۡلَ لِبَاسࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَجَعَلۡنَا ٱلنَّهَارَ مَعَاشࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَيۡنَا فَوۡقَكُمۡ سَبۡعࣰ ا شِدَادࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَجَعَلۡنَا سِرَاجࣰ ا وَهَّاجࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَأَنزَلۡنَا مِنَ ٱلۡمُعۡصِرَٰتِ مَآءࣰ ثَجَّاجࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخۡرِجَ بِهِۦ حَبࣰّ ا وَنَبَاتࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَجَنَّٰتٍ أَلۡفَافًا"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "إِنَّ يَوۡمَ ٱلۡفَصۡلِ كَانَ مِيقَٰتࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "يَوۡمَ يُنفَخُ فِي ٱلصُّورِ فَتَأۡتُونَ أَفۡوَاجࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَفُتِحَتِ ٱلسَّمَآءُ فَكَانَتۡ أَبۡوَٰبࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَسُيِّرَتِ ٱلۡجِبَالُ فَكَانَتۡ سَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "إِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَادࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطَّٰغِينَ مَـَٔابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لَّٰبِثِينَ فِيهَآ أَحۡقَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَّا يَذُوقُونَ فِيهَا بَرۡدࣰ ا وَلَا شَرَابًا"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "إِلَّا حَمِيمࣰ ا وَغَسَاقࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَآءࣰ وِفَاقًا"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "إِنَّهُمۡ كَانُواْ لَا يَرۡجُونَ حِسَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَكَذَّبُواْ بِـَٔايَٰتِنَا كِذَّابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَيۡءٍ أَحۡصَيۡنَٰهُ كِتَٰبࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوقُواْ فَلَن نَّزِيدَكُمۡ إِلَّا عَذَابًا"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "إِنَّ لِلۡمُتَّقِينَ مَفَازًا"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَآئِقَ وَأَعۡنَٰبࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَكَوَاعِبَ أَتۡرَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَكَأۡسࣰ ا دِهَاقࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَّا يَسۡمَعُونَ فِيهَا لَغۡوࣰ ا وَلَا كِذَّٰبࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَآءࣰ مِّن رَّبِّكَ عَطَآءً حِسَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبِّ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَا ٱلرَّحۡمَٰنِۖ لَا يَمۡلِكُونَ مِنۡهُ خِطَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "يَوۡمَ يَقُومُ ٱلرُّوحُ وَٱلۡمَلَٰٓئِكَةُ صَفࣰّ اۖ لَّا يَتَكَلَّمُونَ إِلَّا مَنۡ أَذِنَ لَهُ ٱلرَّحۡمَٰنُ وَقَالَ صَوَابࣰ ا"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذَٰلِكَ ٱلۡيَوۡمُ ٱلۡحَقُّۖ فَمَن شَآءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔابًا"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "إِنَّآ أَنذَرۡنَٰكُمۡ عَذَابࣰ ا قَرِيبࣰ ا يَوۡمَ يَنظُرُ ٱلۡمَرۡءُ مَا قَدَّمَتۡ يَدَاهُ وَيَقُولُ ٱلۡكَافِرُ يَٰلَيۡتَنِي كُنتُ تُرَٰبَۢا"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "وَٱلنَّٰزِعَٰتِ غَرۡقࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "وَٱلنَّٰشِطَٰتِ نَشۡطࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "وَٱلسَّٰبِحَٰتِ سَبۡحࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "فَٱلسَّٰبِقَٰتِ سَبۡقࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "فَٱلۡمُدَبِّرَٰتِ أَمۡرࣰ ا"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "يَوۡمَ تَرۡجُفُ ٱلرَّاجِفَةُ"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "تَتۡبَعُهَا ٱلرَّادِفَةُ"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "قُلُوبࣱ يَوۡمَئِذࣲ وَاجِفَةٌ"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "أَبۡصَٰرُهَا خَٰشِعَةࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "يَقُولُونَ أَءِنَّا لَمَرۡدُودُونَ فِي ٱلۡحَافِرَةِ"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "أَءِذَا كُنَّا عِظَٰمࣰ ا نَّٰخِرَةࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "قَالُواْ تِلۡكَ إِذࣰ ا كَرَّةٌ خَاسِرَةࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "فَإِنَّمَا هِيَ زَجۡرَةࣱ وَٰحِدَةࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "فَإِذَا هُم بِٱلسَّاهِرَةِ"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "هَلۡ أَتَىٰكَ حَدِيثُ مُوسَىٰٓ"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "إِذۡ نَادَىٰهُ رَبُّهُۥ بِٱلۡوَادِ ٱلۡمُقَدَّسِ طُوًى"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "ٱذۡهَبۡ إِلَىٰ فِرۡعَوۡنَ إِنَّهُۥ طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "فَقُلۡ هَل لَّكَ إِلَىٰٓ أَن تَزَكَّىٰ"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "وَأَهۡدِيَكَ إِلَىٰ رَبِّكَ فَتَخۡشَىٰ"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "فَأَرَىٰهُ ٱلۡأٓيَةَ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "فَكَذَّبَ وَعَصَىٰ"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "ثُمَّ أَدۡبَرَ يَسۡعَىٰ"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "فَحَشَرَ فَنَادَىٰ"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "فَقَالَ أَنَا۠ رَبُّكُمُ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلۡأٓخِرَةِ وَٱلۡأُولَىٰٓ"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "إِنَّ فِي ذَٰلِكَ لَعِبۡرَةࣰ لِّمَن يَخۡشَىٰٓ"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَأَنتُمۡ أَشَدُّ خَلۡقًا أَمِ ٱلسَّمَآءُۚ بَنَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمۡكَهَا فَسَوَّىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَٱلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحَىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَٱلۡجِبَالَ أَرۡسَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰعࣰ ا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوۡمَ يَتَذَكَّرُ ٱلۡإِنسَٰنُ مَا سَعَىٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ ٱلۡجَحِيمُ لِمَن يَرَىٰ"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ ٱلۡجَحِيمَ هِيَ ٱلۡمَأۡوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفۡسَ عَنِ ٱلۡهَوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ ٱلۡجَنَّةَ هِيَ ٱلۡمَأۡوَىٰ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "يَسۡـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرۡسَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكۡرَىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَىٰ رَبِّكَ مُنتَهَىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخۡشَىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوٓاْ إِلَّا عَشِيَّةً أَوۡ ضُحَىٰهَا"
        }
    ]
}