{
    "pages": [
        {
            "chapter": 44,
            "verse": 40,
            "text": "إِنَّ يَوۡمَ ٱلۡفَصۡلِ مِيقَٰتُهُمۡ أَجۡمَعِينَ"
        },
        {
            "chapter": 44,
            "verse": 41,
            "text": "يَوۡمَ لَا يُغۡنِي مَوۡلًى عَن مَّوۡلࣰ ى شَيۡـࣰٔ ا وَلَا هُمۡ يُنصَرُونَ"
        },
        {
            "chapter": 44,
            "verse": 42,
            "text": "إِلَّا مَن رَّحِمَ ٱللَّهُۚ إِنَّهُۥ هُوَ ٱلۡعَزِيزُ ٱلرَّحِيمُ"
        },
        {
            "chapter": 44,
            "verse": 43,
            "text": "إِنَّ شَجَرَتَ ٱلزَّقُّومِ"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "طَعَامُ ٱلۡأَثِيمِ"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "كَٱلۡمُهۡلِ تَغۡلِي فِي ٱلۡبُطُونِ"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "كَغَلۡيِ ٱلۡحَمِيمِ"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "خُذُوهُ فَٱعۡتِلُوهُ إِلَىٰ سَوَآءِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "ثُمَّ صُبُّواْ فَوۡقَ رَأۡسِهِۦ مِنۡ عَذَابِ ٱلۡحَمِيمِ"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "ذُقۡ إِنَّكَ أَنتَ ٱلۡعَزِيزُ ٱلۡكَرِيمُ"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "إِنَّ هَٰذَا مَا كُنتُم بِهِۦ تَمۡتَرُونَ"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "إِنَّ ٱلۡمُتَّقِينَ فِي مَقَامٍ أَمِينࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "فِي جَنَّٰتࣲ وَعِيُونࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "يَلۡبَسُونَ مِن سُندُسࣲ وَإِسۡتَبۡرَقࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "كَذَٰلِكَ وَزَوَّجۡنَٰهُم بِحُورٍ عِينࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "يَدۡعُونَ فِيهَا بِكُلِّ فَٰكِهَةٍ ءَامِنِينَ"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "لَا يَذُوقُونَ فِيهَا ٱلۡمَوۡتَ إِلَّا ٱلۡمَوۡتَةَ ٱلۡأُولَىٰۖ وَوَقَىٰهُمۡ عَذَابَ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "فَضۡلࣰ ا مِّن رَّبِّكَۚ ذَٰلِكَ هُوَ ٱلۡفَوۡزُ ٱلۡعَظِيمُ"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "فَإِنَّمَا يَسَّرۡنَٰهُ بِلِسَانِكَ لَعَلَّهُمۡ يَتَذَكَّرُونَ"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "فَٱرۡتَقِبۡ إِنَّهُم مُّرۡتَقِبُونَ"
        }
    ]
}