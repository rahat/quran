{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و ستاره طارِق"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و چه می‌دانى که طارِق چیست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره‌اى است درخشنده"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "[به اینها سوگند که] هر کس مراقب و نگهبانى دارد"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس انسان بنگرد که از چه آفریده شده است؟"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفریده شده است،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "[آبى] که از میان پشت و پیش بیرون مى‌آید"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بى‌تردید او بر بازگرداندن انسان تواناست،"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزى که رازها آشکار شود"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس براى انسان، هیچ نیرویى [از درون] و یاورى [از بیرون] نیست"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان باران‌زا"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "سوگند به زمین که [براى رویش گیاهان] برشکافته است"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "که بی‌گمان این [قرآن] سخنى است قاطع و جداکننده"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و بیهوده و شوخى نیست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "کافران پیوسته نیرنگ مى‌کنند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من نیز تدبیر مى‌کنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس کافران را مهلت بده و اندک زمانى آنان را به خود واگذار"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار بلندمرتبه‌ات را به پاکى یاد کن"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همان که آفرید و سامان بخشید"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آن که [هر چیز را] اندازه نهاد و هدایت کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آن که چراگاه را رویانید"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "و پس [از چندى] آن را خشک و تیره کرد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ما [قرآن را] بر تو مى‌خوانیم، پس فراموش نخواهى کرد"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه را خدا بخواهد که او بى‌گمان آشکار و نهان را مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و ما تو را براى آسان‌ترین [راه دعوت] آماده مى‌سازیم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس پند بده، اگر پند دادن سودمند باشد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "به زودى آن که [از خدا] می‌ترسد، پند گیرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و بدبخت‌ترینِ افراد از آن دورى کند"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان کس که به آتش بزرگ‌تر درمى‌آید"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "سپس در آنجا نه بمیرد و نه زندگى کند"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "به راستى رستگار شد آن کس که خود را پاک گردانید"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و نام پروردگارش را یاد کرد و نماز گزارد"
        }
    ]
}