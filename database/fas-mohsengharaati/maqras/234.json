{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "چهره درهم کشید و روى برتافت"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "از این که مردی نابینا به سراغ او آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه می‌دانى؟ شاید او در پى پاکى و پارسایى باشد"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا پند گیرد و آن پند سودش بخشد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "امّا کسى که خود را بى‌نیاز مى‌بیند"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو به او روی مى‌آورى"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "با آن که اگر نخواهد خود را پاک سازد، بر تو چیزى نیست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و امّا کسى که شتابان نزد تو آمده،"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالى که [از خدا] مى‌ترسد،"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "از او به دیگران مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "این چنین [برخوردى شایسته‌] نیست! بى‌تردید این [قرآن] مایه‌ی پند است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر کس بخواهد، آن را یاد کند و از آن پند گیرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در میان صحیفه‌هایى ارجمند،"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلندمرتبه و پاکیزه است"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست سفیرانى"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار و نیکوکار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر این انسان [سرکش] که چه ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "[مگر خداوند] او را از چه چیز آفریده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه‌اى [ناچیز] او را آفرید و سامانش بخشید"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه [رشد و کمال] را براى او آسان و فراهم نمود"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "آن‌گاه او را میراند و در گورش نهاد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پس هر زمان که بخواهد، او را برانگیزد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "هرگز! هنوز آنچه را به او فرمان داده، بجا نیاورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس باید انسان به غذاى خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "ما آب را آن­گونه که باید، [از آسمان] فروریختیم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمین را به خوبى شکافتیم"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "و در آن، دانه رویاندیم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و نیز انگور و سبزیجات،"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زیتون و خرما،"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌هاى پردرخت،"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و میوه و چراگاه،"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "براى برخوردارى شما و چهارپایانتان"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس هنگامى که آن صداى هولناک برآید"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى که انسان از برادرش بگریزد،"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و [از] مادر و پدرش،"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و [از] همسر و فرزندانش،"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز براى هر یک از آنان گرفتارى است که او را [از دیگران] بازمی‌دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "چهره‌هایى در آن روز درخشانند،"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شادمانند،"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و بر چهره‌هایى در آن روز، غبار [غم] نشسته"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "و تیرگى و سیاهى، چهره‌ی آنان را پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "آنان، همان کافران بدکردارند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "آن‌گاه که خورشید درهم­پیچیده و تاریک شود"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و آن‌گاه که ستارگان به خاموشى گرایند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و آن‌گاه که کوه‌ها به حرکت درآیند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و آن‌گاه که اموال با ارزش به حال خود رها شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و آن‌گاه که حیوانات وحشى، برانگیخته شوند و گرد آیند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و آن‌گاه که دریاها شعله‌ور و جوشان شوند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و آن‌گاه که جان‌ها جفت و قرین شوند. [نیکان با نیکان و بدان با بدان]"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و آن‌گاه که از [دختران] زنده به گور شده پرسیده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "به کدامین گناه کشته شده‌اند؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و آن‌گاه که نامه‌هاى عمل گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و آن‌گاه که آسمان از جاى کنده شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و آن‌گاه که دوزخ شعله‌ور شود"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و آن‌گاه که بهشت [براى اهلش] نزدیک آورده شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "[در آن هنگام] هر کس آنچه را [در دنیا] آماده کرده است، مى‌داند"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند مى‌خورم به ستارگانى که بازمى‌گردند،"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "در حرکتند و پنهان مى‌شوند،"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "و سوگند به شب، آن‌گاه که برود،"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و سوگند به صبح، آن‌گاه که بدمد،"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "که آن [قرآن]، بازخوانده‌ی [جبرئیل،] پیام‌آورى گرامى است"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "نیرومندى که نزد [خداوندِ] صاحب عرش، داراى مقامی والاست"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "[دیگر فرشتگان] از او فرمان می‌برند و امین است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و همنشینتان [محمّد که عمرى با راستى و خردورزی در میان شما زندگى کرده است‌،] هیچ‌گونه جنونى ندارد"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و قطعاً آن [فرشته‌] را در افق روشن دیده است"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او بر [رساندن وحى از عالم] غیب بخل نمى‌ورزد. [و آنچه را دریافت کرده، دریغ نمى‌کند]"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و آن قرآن، بازخوانده‌ی شیطانِ رانده شده نیست"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس به کجا مى‌روید؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "آن مایه‌ی تذکّر و پند براى جهانیان است"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "براى هر کس از شما که بخواهد راستى و درستى پیشه کند"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و تا خداوند، پروردگار جهانیان نخواهد، [شما نیز] نخواهید خواست"
        }
    ]
}