{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "از چه از یکدیگر مى‌پرسند؟"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "از خبر بزرگ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "همان که درباره‌ی آن اختلاف دارند"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "چنین نیست! به زودى خواهند دانست"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "باز هم چنین نیست! به زودى خواهند دانست"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آیا زمین را بستر آرامش قرار ندادیم؟"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و کوه‌ها را میخ‌هایی [براى استوارى آن]؟"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و شما را جفت‌هایی آفریدیم"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و خواب را مایه‌ی آرامش شما قرار دادیم"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و شب را پوششى ساختیم"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و روز را وقت معاش قرار دادیم"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و بر فراز شما هفت [آسمان] استوار بنا کردیم"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و چراغى فروزان قرار دادیم"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "و از ابرهاى باران‌زا و فشرده، آبى فراوان و ریزان فروفرستادیم"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا با آن دانه و گیاه بیرون آوریم،"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و باغ‌هایى پر درخت"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "همانا روز جدایى، وعده‌گاه [ما با شما] است"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزى که در صور دمیده می‌شود و گروه گروه مى‌آیید"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "و آسمان گشوده شود و به صورت درهایى باز درآید"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و کوه‌ها روان شوند و چون سراب گردند"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "همانا دوزخ، کمین‌گاهى است"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "بازگشت‌گاهى است براى سرکشان"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "روزگارى [دراز] در آن می‌مانند"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "در آن [دوزخ]، نه چیز خنکى می‌چشند و نه آشامیدنى [گوارایى]،"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر آب داغ و چرکابى"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "این، کیفرى است مناسب"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "آنان بودند که به حساب [قیامت] امید و باورى نداشتند"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و آیات ما را به سختى تکذیب مى‌کردند"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "[ولى] ما حساب همه چیز را درکتابی داشتیم"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "«پس بچشید که هرگز جز عذاب بر شما نمى‌افزاییم.»"
        }
    ]
}