{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "آیا خبر حادثه‌ی فراگیر به تو رسیده است؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در آن روز، چهره‌هایى خوار و زبونند"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "[با آن که] تلاش کرده‌اند و رنج برده‌اند،"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "[امّا] به آتشى سوزان درآیند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از چشمه‌اى جوشان نوشانده شوند"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "و خوراکى جز خار خشک و تلخ ندارند"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "که نه فربه کند و نه گرسنگى را از میان برد"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "در چنین روزى چهره‌هایى خرّم و شادابند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از کوشش خود خشنودند"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشت برین [جاى دارند]"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "آنجا سخن بیهوده‌اى نشنوند"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آنجا چشمه‌اى جارى است"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آنجا تخت‌هایى است پرارج و برافراشته"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و سبوهایى چیده شده،"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالش‌هایى ردیف شده،"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرش‌هایى گرانبها که گسترده شده است"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "پس آیا به شتر نمى‌نگرند که چگونه آفریده شده؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و به آسمان که چگونه برافراشته شده؟"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و به کوه‌ها که چگونه برپا داشته شده؟"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمین که چگونه گسترده شده است؟"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس یادآورى کن که تو فقط یادآورى کننده‌اى"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "تو بر آنان تسلّطى ندارى [که به ایمان آوردن مجبورشان کنى]"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "ولى آن کس که روى گرداند و کفر ورزید،"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "پس خداوند او را به بزرگ‌ترین عذاب مجازات مى‌کند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "بازگشت آنان به سوى ماست"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس حسابشان [نیز] بر عهده‌ی ماست"
        }
    ]
}