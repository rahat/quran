{
    "rukus": [
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس سوگند به آنچه مى‌بینید،"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و آنچه نمى‌بینید،"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "همانا آن [قرآن] گفتار فرستاده‌ای ارجمند است"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و سخن یک شاعر نیست. چه کم ایمان مى‌آورید"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و سخن کاهن و پیشگو [هم] نیست. چه کم پند مى‌پذیرید"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "[بلکه] فروفرستاده‌اى از جانب پروردگار جهانیان است"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر [پیامبر] پاره‌اى از گفته‌هاى ساختگى را به ما نسبت مى‌داد،"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "قطعاً او را با قدرت مى‌گرفتیم"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "سپس رگ قلبش را قطع مى‌کردیم"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "پس هیچ یک از شما نمى‌توانست سپر او شود"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "و به راستی این [قرآن مایه‌ی] یادآورى براى پرهیزکاران است"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و ما خوب مى‌دانیم که از میان شما انکارکنندگانى هستند"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و بى‌شک [این انکار در قیامت] مایه‌ی حسرت کافران خواهد بود"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و این که آن، حقیقت یقینی است"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس به نام پروردگار بزرگت تسبیح گوى"
        }
    ]
}