{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "“Ndikulumbilira ku mwamba ndi Nyenyezi imene imadza usiku"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "“Chitakudziwitse nchiyani za Nyenyezi yodza usikuyo"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "“Imeneyo ndi nyenyezi yowala kwambiri (mu mdima)"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "“Ndithudi palibe mzimu uliwonse koma uli ndi msungi wake (amene akuuyang’anira ndikulemba zonse zochita zake)"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "“Aganizire munthu, kodi adalengedwa kuchokera kuchiyani"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "“Adalengedwa kuchokera ku madzi ofwamphuka"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "“Amatuluka kuchokera pakati pa mafupa a msana (wa mwamuna) ndi chifuwa (cha mkazi)"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "“Ndithu Iye ndiwakutha, kumbwezeranso (ku moyo pa mbuyo pa imfa)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "“Tsiku limene zobisika zonse zidzaonekera poyera"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "“Munthu sadzakhala ndi mphamvu (tsiku limenelo zodzitetezera iye mwini) ndiponso sadzakhala ndi mtetezi"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "“Ndikulumbiliranso mitambo yobweretsabweretsa mvula"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "“Ndi nthaka imene imang’ambika (potulutsa m’mera)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "“Ndithudi iyi (Qur’an) ndi mawu olekanitsa (Haqq ndi Bâtwil - choona ndi chonama)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "“Imeneyi sinkhambakamwa"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "“Ndithudi iwo akukonza chiwembu"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "“Nanenso ndikuwakonzera chiwembu (champhamvu kwambiri chimene sangathe kuchipewa)"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "“Basi, apatse nthawi osakhulupirira apatse nthawi pang’ono, (aona posachedwa)"
        }
    ]
}