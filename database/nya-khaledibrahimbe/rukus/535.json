{
    "rukus": [
        {
            "chapter": 93,
            "verse": 1,
            "text": "“Ndikulumbilira mmawa dzuwa litakwera (imene ili nthawi yantchito)"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "“Ndi usiku pamene ukuvindikira"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "“Sadakusiye Mbuye wako (iwe Mneneri) (s.a.w) ndiponso sadakude"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "“Ndithu moyo watsiku lirimkudza ndi wabwino kwa iwe kuposa umoyo woyambawu"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "“Ndithu posachedwapa akupatsa Mbuye wako (zabwino zamdziko lapansi ndi tsiku lachimaliziro) ndipo ukondwera"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "“Kodi sadakupeze uli wa masiye ndipo adakupatsa pokhala pabwino"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "“Ndipo adakupeza uli wosazindikira (Qur’an) nakuongola (pokuzindikiritsa Qur’aniyo ndi malamulo a chipembedzo)"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "“Ndiponso adakupeza uli wosauka nakulemeretsa"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "“Basi, wamasiye usamchitire nkhanza"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "“Ndiponso wopempha usamukalipire"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "“Tsono mtendere wa Mbuye wako uwutchule (pothokoza ndi kugwira ntchito zabwino)"
        }
    ]
}