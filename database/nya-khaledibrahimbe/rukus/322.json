{
    "rukus": [
        {
            "chapter": 26,
            "verse": 123,
            "text": "“Naonso Âdi adatsutsa atumiki"
        },
        {
            "chapter": 26,
            "verse": 124,
            "text": "“Pamene m’bale wawo (Mneneri) Hûd adawafunsa kuti: “Kodi simuopa (Allah)?”"
        },
        {
            "chapter": 26,
            "verse": 125,
            "text": "““Ndithu ine ndine Mtumiki wokhulupirika kwa inu;”"
        },
        {
            "chapter": 26,
            "verse": 126,
            "text": "““Choncho, muopeni Allah ndipo mverani ine.”"
        },
        {
            "chapter": 26,
            "verse": 127,
            "text": "““Ndipo pazimenezi sindikukupemphani malipiro; ndithu malipiro anga ali kwa (Allah) Mbuye wa zolengedwa.”"
        },
        {
            "chapter": 26,
            "verse": 128,
            "text": "““Kodi mukudzimangira nyumba pamalo paliponse pachitunda pokongola, moseweretsa?”"
        },
        {
            "chapter": 26,
            "verse": 129,
            "text": "““Ndipo mukudzimangira (nyumba zonga) linga ngati kuti mukuona kuti mudzakhala muyaya?”"
        },
        {
            "chapter": 26,
            "verse": 130,
            "text": "““Ndipo mukamamenya nkhondo mumamenya modzitukumula.”"
        },
        {
            "chapter": 26,
            "verse": 131,
            "text": "““Choncho muopeni Allah ndipo ndimvereni.”"
        },
        {
            "chapter": 26,
            "verse": 132,
            "text": "““Ndipo muopeni Yemwe adakupatsani zimene mukuzidziwa.”"
        },
        {
            "chapter": 26,
            "verse": 133,
            "text": "““Adakupatsani ziweto ndi ana.”"
        },
        {
            "chapter": 26,
            "verse": 134,
            "text": "““Ndi minda ndi akasupe.”"
        },
        {
            "chapter": 26,
            "verse": 135,
            "text": "““Ndithu ine ndikukuoperani chilango cha tsiku lalikulu.”"
        },
        {
            "chapter": 26,
            "verse": 136,
            "text": "“Iwo adati: “Kwa ife nchimodzimodzi, utichenjeze kapena iwe usakhale mmodzi mwa ochenjeza.”"
        },
        {
            "chapter": 26,
            "verse": 137,
            "text": "““Ndithu kutero (anthu ena kudzitcha atumiki a Allah), sikanthu koma ndi machitidwe a anthu akale.”"
        },
        {
            "chapter": 26,
            "verse": 138,
            "text": "““Ndipo ife sitidzalangidwa (monga momwe ukunenera).”"
        },
        {
            "chapter": 26,
            "verse": 139,
            "text": "“Choncho adamtsutsa, ndipo tidawaononga. Ndithu m’zimenezi muli malingaliro; koma ambiri a iwo sadali okhulupirira"
        },
        {
            "chapter": 26,
            "verse": 140,
            "text": "“Ndipo ndithu Mbuye wako ndiye Wamphamvu zoposa; Wachisoni chosatha"
        }
    ]
}