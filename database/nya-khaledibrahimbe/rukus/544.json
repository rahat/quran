{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "“Kwakutangwanitsani kusonkhanitsa (chuma chambiri ndi ana)"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "“Mpakana mwapita kumanda (mwamwalira ndikukalowa m’manda)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "“Sichoncho! Mudziwa posachedwapa"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "“Ndiponso sichoncho! Mudziwa posachedwapa"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "“Sichoncho! mukadakhala mukudziwa, kudziwa kwachitsimikizo (sibwenzi mukutangwanika ndi za mdziko)"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "“Ndithudi mudzauona Moto"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "“Kenako mudzauona ndithu ndi diso lachitsimikizo"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "“Tsono patsikulo ndithudi mudzafunsidwa za mtendere (omwe munapatsidwa)"
        }
    ]
}