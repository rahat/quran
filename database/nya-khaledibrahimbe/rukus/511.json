{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "“Sichoncho; ndikulumbilira mwezi"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "“Ndi usiku pamene ukuchoka"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "“Ndi m’bandakucha pamene kukuyera"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "“Ndithu uwo, (moto wa Jahannam) ndi chimodzi mwa malodza akulu"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "“Ndi chenjezo kwa anthu"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "“Kwa yemwe wafuna mwa inu kutsogola (pochita zabwino zokamthandiza tsiku louka kwa akufa) kapena kutsalira (ndi za m’dziko)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "“Mzimu uliwonse ukakhala chikole ndi zimene udachita"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "“Kupatula akudzanja lamanja (Asilamu amene adadzimasula okha potembenukira kwa Allah)"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "“(Iwo) adzakhala m’minda (yosasimbika kukongola kwake) akufunsana wina ndi mnzake"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "“Za anthu oipa"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "“(Kuti): “Nchiyani chakulowetsani ku Moto?”"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "“Adzanena: “Sitidali m’gulu la omwe adali kupemphera (Swala)"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "“Ndiponso sitidali kuwadyetsa masikini"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "“Koma tinkangomira (m’zachabe ndi zabodza) pamodzi ndi omira (m’menemo)"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "“Ndiponso tidali kutsutsa za tsiku la malipiro"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "“Mpaka imfa idatifika.”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "“Choncho siwudzawathandiza uwomboli wa awomboli"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "“Kodi ali ndi chiyani iwo pakuti azinyozera chenjezoli (limene lili Qur’an)"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "“(Akuyenda mothamanga kuti asamve chenjezoli) ngati kuti iwo ndi mbidzi zothawa"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "“(Zimene) zikuthawa mkango"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "“Ati akufuna aliyense mwa iwo apatsidwe kalata zotambasulidwa (zimene zitsimikize uthenga wa Mneneri Muhammad{s.a.w)"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "“Sichoncho! Koma kuti iwo sakuopa tsiku lachimaliziro"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "“Sichoncho! Ndithu ichi (Qur’an) ndichikumbutso (chokwanira)"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "“Choncho amene wafuna achikumbukire (amene sakufuna ndizake)"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "“Ndipo sangakumbukire pokhapokha Allah atafuna. Iye ndiye Amene ali woyenera kumuopa, ndiponso ndiye Mwini kukhululukira (amene akumuopa)"
        }
    ]
}