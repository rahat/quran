{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "“Werenga! (Iwe Mneneri (s.a.w), zomwe zikuvumbulutsidwa) mdzina la Mbuye wako Yemwe adalenga (zolengedwa zonse)"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "“Adalenga munthu kuchokera ku magazi owundana"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "“Werenga! Ndipo Mbuye wako ndi Wopereka kwambiri"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "“Yemwe waphunzitsa (munthu kulemba) ndi cholembera"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "“Waphunzitsa munthu zinthu (zambiri) zomwe (iye) sadali kuzidziwa"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "“Zoona ndithu koma munthu akupyola malire (podzikweza)"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "“Chifukwa chodziona kuti walemera"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "“Palibe chikaiko, (iwe Mneneri (s.a.w) kobwerera (onse) nkwa Mbuye wako basi; (adzawaukitsa)"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "“Kodi wamuona yemwe akuletsa"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "“Kapolo (wa Allah) akamapemphera"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "“Tandiuza ngati ali pachiongoko"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "“Kapena kuti akulamulira zoopa Allah"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "“Tandiuza (za woletsayo) ngati akutsutsa (zimene wadza nazo Mneneri) ndikunyoza (chikhulupiliro ndi ntchito yabwino)"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "“Kodi sakudziwa kuti Allah akuona (machitidwe ake. Ndipo adzamlipira)"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "“Ayi ndithu ngati sasiya timukoka tsitsi lapatsumba (tiligwira mwamphamvu tsumba lake ndikukamponya ku Moto)"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "“Tsumba labodza (ndiponso) lamachimo"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "“Basi aliitane gulu lakelo, (la amene amakhala nawo pabwalo kuti amthandize pano pa dziko kapena tsiku lachimaliziro)"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "“Nafe tiitana azabaniya (angelo a ku Moto)"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "“Ayi ndithu usamumvere (pa zimene akukuletsazo); koma gwetsa nkhope yako pansi, ndipo dziyandikitse kwa Mbuye wako"
        }
    ]
}