{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "“Ndikulumbilira akavalo othamanga ali ndi phuma"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "“Ndi otulutsa moto ku zikhotwa (pomenyetsa miyendo m’miyala)"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "“Ndi othira nkhondo adani mmawa (dzuwa lisadatuluke)"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "“Ndi kuulutsa fumbi lambiri (kwa adani) nthawi imeneyo"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "“Ndikulowelera mkatikati mwa adani"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "“Ndithu munthu ali wokanira Mbuye wake, (sathokoza Allah pa zimene amdalitsa nazo)"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "“Ndithudi iye pa zimenezi ndi mboni (yodzichitira yekha kupyolera mzochitachita zake)"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "“Ndipo ndithu iye ndiwokonda chuma kwambiri (ndiponso ngwamsulizo)"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "“Kodi sakudziwa zikadzatulutsidwa za m’manda"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "“Ndikudzasonkhanitsidwa ndi kuonekera poyera zomwe zidali m’mitima"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "“Ndithu tsiku limenelo Mbuye wawo adzawadziwa kwambiri (ndikuwalongosolera zonse zochita zawo)"
        }
    ]
}