{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "“Basi, lero kuno alibe bwenzi (lomthandiza)"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "“Ngakhale chakudya kupatula mafinya (a anthu a ku Moto)"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "“Zomwe palibe angazidye kupatula ochimwa (mwadala)"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "“Choncho ndikulumbilira zimene mukuziona"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "“Ndi zimene simukuziona"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "“Ndithudi iyi (Qur’an) ndiliwu la mthenga wolemekezeka (Jibril)"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "“Ndipo simawu a mlakatuli, ndi zochepa zimene mukuzikhulupirira"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "“Ndiponso simawu a mlosi, ndizochepa zimene mmakumbukira"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "“(Ichi ndi) chivumbulutso chochokera kwa Mbuye wa zolengedwa"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "“Ndipo (Mneneri) akadatipekera bodza linalake"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "“Tikadamgwira (mwamphamvu) ndimkono wamanja"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "“Ndipo tikadadula mwa iye mtsempha wa moyo (kotero kuti ndikuferatu nthawi yomweyo)"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "“Sipakadapezeka aliyense mwa inu womteteza (kuchilango Chathu)"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "“Ndithu iyi (Qur’an) ndi phunziro labwino kwa owopa (Allah)"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "“Ndithu Ife, tikudziwa kuti ena mwa inu ndiotsutsa (Qur’an)"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "“Ndipo ndithu iyi (Qur’an) idzakhala chowadandaulitsa (chachikulu) osakhulupirira (pamene adzaona chilango chawo ndi mtendere wa okhulupirira)"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "“Ndithu iyoyi ndichoonadi Chotsimikizika; (mulibe chikaiko)"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "“Basi, lemekeza dzina la Mbuye wako Wamkulu (pitiriza kutamanda dzina Lake)"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "“Wopempha adapempha kuti chiwadzere msanga chilango chopezekacho, (m’kupempha kwa chipongwe ndi kotsutsa)"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "“Kwa okanira palibe angachitsekereze"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "“Chochokera kwa Allah Mwini makwelero"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "“Angelo ndi Jiburil amakwera kwa Iye (Allah) m’tsiku lomwe kutalika kwake kuli ngati zaka zikwi makumi asanu"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "“Choncho, pirira (iwe Mtumiki (s.a.w) kupirira kwabwino"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "“Ndithu iwo akuliona (tsiku la Qiyâma) kuti lili kutali (silingachitike)"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "“Koma Ife tikuliona kuti lilipafupi (ndilochitika)"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "“Tsiku limene thambo lidzakhala ngati mtovu wosungunuka"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "“Ndipo mapiri adzakhala ngati ubweya (wongouluka wokha)"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "“Ndipo m’bale sadzafunsa za m’bale wake"
        }
    ]
}