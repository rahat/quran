{
    "pages": [
        {
            "chapter": 112,
            "verse": 1,
            "text": "“Nena (iwe Mtumiki (s.a.w), kwa amene akukufunsa mwachipongwe, mbiri za Mulungu wako): “Iye ndi Allah Mmodzi, (alibe mnzake)"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "“Allah ndi Wokhala ndi zonse Wodaliridwa ndi zolengedwa Zake"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "“Sadabale (mwana) ndiponso sadaberekedwe"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "“Ndiponso palibe aliyense wofanana ndi Iye.”"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "“Nena: “Ndikudzitchinjiriza ndi Mbuye wam’bandakucha"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "“Kuchokera ku zoipa zimene Iye adazilenga"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "“Ndi ku zoipa za usiku pamene mdima ukulowa mwa mphamvu"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "“Ndi ku zoipa za afiti omwe amauzira mu mfundo"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "“Ndiponso ku zoipa za wansanje pamene akuchita nsanje.”"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "“Nena: “Ndikudzitchinjiriza ndi Mbuye (Mleri) wa anthu (Yemwe akulinganiza zinthu zawo)"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "“Mfumu ya anthu ( Imene iri ndi mphamvu yochita chirichonse pa iwo)"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "“Wopembedzedwa wa anthu"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "“Kuzoipa za mnong’onezi (yemwe amathira unong’onezi wake m’mitimaya anthu) yemwenso amabisala (posiya unong’onezi wake ngati mwini mtimawo atankumbukira Allah)"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "“Yemwe amanong’oneza mzifuwa za anthu"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "“Wochokera m’ziwanda ndi mwa anthu.”"
        }
    ]
}