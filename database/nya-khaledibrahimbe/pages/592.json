{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "“Koma inu mukukonda kwambiri moyo wa dziko lapansi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "“Pamene moyo wa tsiku lachimaliziro ndiwabwino kwambiri ndiponso wamuyaya"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "“Ndithu izi (mukuuzidwa m’Qur’an) zilipo m’mabuku oyamba, akale"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "“Mabuku a Ibrahim ndi Mûsa"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "“Kodi yakudzera, (iwe Mtumiki) (s.a.w) nkhani ya Qiyâma (imene idzaphimba anthu ndi zoopsa zake)"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "“Nkhope zina tsiku limenelo, zidzakhala zonyozeka"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "“Zogwira ntchito yotopetsa kwambiri"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "“Zikalowa ku Moto wotentha kwambiri"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "“Zikamwetsedwa mu kasupe wotentha kwabasi"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "“Sadzakhala ndichakudya koma minga"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "“Yosanenepetsa (thupi) ndiponso yosathetsa njala"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "“Nkhope zina tsiku limenelo zidzakhala zosangalala"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "“Zidzakondwera ndi malipiro a zochita zake (za pa dziko lapansi)"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "“M’minda ya pamwamba (Jannah)"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "“Sizikamva m’menemo mawu oipa, (otukwana ndi kulaula)"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "“Mmenemo muli kasupe woyenda (mokongola)"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "“Mmenemo muli makama a pamwamba"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "“Ndi zikho zoikidwa bwino (pamaso pawo)"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "“Ndi misamiro yoikidwa bwino m’mizeremizere"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "“Ndi mphasa (zamtengo wapatali, carpet) zoyalidwa ponseponse"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "“Kodi (akunyozera kulingalira zisonyezo za Allah), sakulingalira kungamira idalengedwa motani"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "“Ndi thambo (limene akuliona nthawi zonse) m’mene lidatukulidwira (kutali popanda mzati)"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "“Ndi mapiri momwe adakhazikitsidwira (molimba)"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "“Ndi nthaka momwe idayalidwira"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "“Basi, kumbutsa (anthu) ndithu iwe, ndiwe mkumbutsi"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "“Sindiwe wokakamiza anthu (kuti akhulupirire)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "“Koma amene anyoza ndi kukanira (ulaliki wako)"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "“Allah amulanga chilango chachikulu zedi"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "“Ndithu kobwerera kwawo ndi kwa Ife basi"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "“Ndipo ndithu kuwerengedwa kwawo kuli kwa Ife"
        }
    ]
}