{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "“Lemekeza dzina la Mbuye wako Wapamwambamwamba (ndikuliyeretsa ku zinthu zosayenera)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "“Amene adalenga (chilichonse) ndikuchikonza bwinobwino (mkalengedwe kolingana)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "“Amene adalamuliratu (chilichonse zochita zake) ndi kuchiongolera"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "“Ndi Yemwenso akumeretsa msipu"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "“Ndipo nausandutsa kukhala wouma ndi wodera"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "“Tikulakatulira (chivumbulutso Chathu) ndipo siuyiwala"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "“Kupatula chimene wafuna Allah (kuti uchiiwale); ndithu Iye amadziwa zoonekera ndi zimene zimabisika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "“Ndipo tikufewetsera (njira yochitira zinthu) zabwino"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "“Choncho akumbutse (wanthu powalalikira) ngati kukumbutsa kuthandiza"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "“(Palibe chikaiko ulalikiwo) aukumbukira (ndikuthandizidwa nawo) amene akuopa Allah"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "“Ndipo wamavuto ambiri, (wamakani ndi wokanira), adzitalikitsa ndi ulalikiwo"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "“Amene adzalowa ku moto waukulu (umene wakonzedwa kuti udzakhale malipiro ake)"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "“Ndipo sakafa m’menemo (ndikupumula kumazunzo), ndiponso sakakhala ndi moyo (wamtendere)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "“Ndithu wapambana amene wadziyeretsa (ku machimo)"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "“Ndikukumbukira dzina la Mbuye wake (ndi mtima wake, ndi lirime lake) uku akumapemphera"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "“Koma inu mukukonda kwambiri moyo wa dziko lapansi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "“Pamene moyo wa tsiku lachimaliziro ndiwabwino kwambiri ndiponso wamuyaya"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "“Ndithu izi (mukuuzidwa m’Qur’an) zilipo m’mabuku oyamba, akale"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "“Mabuku a Ibrahim ndi Mûsa"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "“Kodi yakudzera, (iwe Mtumiki) (s.a.w) nkhani ya Qiyâma (imene idzaphimba anthu ndi zoopsa zake)"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "“Nkhope zina tsiku limenelo, zidzakhala zonyozeka"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "“Zogwira ntchito yotopetsa kwambiri"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "“Zikalowa ku Moto wotentha kwambiri"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "“Zikamwetsedwa mu kasupe wotentha kwabasi"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "“Sadzakhala ndichakudya koma minga"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "“Yosanenepetsa (thupi) ndiponso yosathetsa njala"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "“Nkhope zina tsiku limenelo zidzakhala zosangalala"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "“Zidzakondwera ndi malipiro a zochita zake (za pa dziko lapansi)"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "“M’minda ya pamwamba (Jannah)"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "“Sizikamva m’menemo mawu oipa, (otukwana ndi kulaula)"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "“Mmenemo muli kasupe woyenda (mokongola)"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "“Mmenemo muli makama a pamwamba"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "“Ndi zikho zoikidwa bwino (pamaso pawo)"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "“Ndi misamiro yoikidwa bwino m’mizeremizere"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "“Ndi mphasa (zamtengo wapatali, carpet) zoyalidwa ponseponse"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "“Kodi (akunyozera kulingalira zisonyezo za Allah), sakulingalira kungamira idalengedwa motani"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "“Ndi thambo (limene akuliona nthawi zonse) m’mene lidatukulidwira (kutali popanda mzati)"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "“Ndi mapiri momwe adakhazikitsidwira (molimba)"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "“Ndi nthaka momwe idayalidwira"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "“Basi, kumbutsa (anthu) ndithu iwe, ndiwe mkumbutsi"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "“Sindiwe wokakamiza anthu (kuti akhulupirire)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "“Koma amene anyoza ndi kukanira (ulaliki wako)"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "“Allah amulanga chilango chachikulu zedi"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "“Ndithu kobwerera kwawo ndi kwa Ife basi"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "“Ndipo ndithu kuwerengedwa kwawo kuli kwa Ife"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "“Ndikulumbilira kuyera kwa m’bandakucha; (pamene usiku uthawa)"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "“Ndi masiku khumi (a mwezi wa Dhul-Hijjah omwe ngopatulika kwa Allah)"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "“Ndi Shaf’i ndi Witri: (nambala yogawika ndi yosagawika)"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "“Ndi usiku pamene ukupita (chifukwa cha kuyenda kwa dziko kodabwitsa)"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "“Kodi m’zimene zatchulidwazi simuli kulumbira kokwanira, kwa munthu wa nzeru"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "“Kodi sudadziwe momwe Mbuye wako adawalangira Âdi (anthu a mneneri Hûd)"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "“Aku Irama; ataliatali ngati zipilala"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "“Omwe onga iwo sadalengedwe m’maiko ena"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "“Ndi Asamudu, (anthu a mneneri Swaleh) amene adali kudula matanthwe ku chigwa (chotchedwa Wadi Qura ndi kumamanga nyumba zikuluzikulu)"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "“Komanso Firiauna (Farawo) mwini magulu ankhondo (omwe amalimbikitsa ufumu wake monga momwe zichiri zimalimbikitsira tenti)"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "“Amene adaipitsa m’maiko mopyola malire"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "“Ndipo adachulukitsa m’menemo kuononga (pamwamba pa kuononga)"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "“Choncho Mbuye wako adawathira ndi mitundu ya zilango (zoopsa)"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "“Ndithu Mbuye wako ali tcheru (ndi zochita za anthu. Ndipo akuwasungira kuti adzawalipire)"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "“Pamene munthu Mbuye wake akumuyesa (mayeso) ndikumulemekeza ndi kumpatsa mtendere (wachuma, ulemelero ndi mphamvu) amanena monyada: Mbuye wanga wandilemekeza (chifukwa zimenezi nzondiyenera ine)"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "“Koma akamuyesa mayeso ndi kumchepetsera rizq lake, (chuma) amanena (motaya rntima): Mbuye wanga wandinyoza"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "“Sichoncho ayi, (monga momwe mukuganizira) koma inu simuchitira za ufulu ana amasiye"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "“Ndipo simulimbikitsana za kudyetsa osauka"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "“Ndipo mukudya chuma cha masiye; kudya kosusuka"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "“Ndiponso mukukonda chuma; kukonda kopyola muyeso"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "“Sichoncho! (Siyani machitidwe amenewa); nthaka ikadzapondedwa (ndikuifafaniza)"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "“Ndikubwera Mbuye wako (mmabweredwe omwe akuwadziwa Iye Mwini) ndi angelo ali mmizeremizere"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "“Ndi kubweretsedwa Jahannam pa tsikulo, basi tsiku limenelo munthu adzakumbukira, koma kukumbuka kumeneko kudzamthandiza chiyani"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "“Adzanena: Kalanga ine! Ndikadatsogoza zabwino pa za moyo wanga uno"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "“Motero patsikuli, palibe wina amene adzalange monga momwe (Allah) adzalangire"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "“Ndiponso sanganjate aliyense monga kunjata kwa iye (Allah)"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "“E iwe mzimu wokhazikika (ndi choona)"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "“Bwerera kwa Mbuye wako uli wokondwera (ndi zomwe wapatsidwa), ndipo uli woyanjidwa (ndi Allah pa zomwe udatsogoza)"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "“Lowa mgulu la akapolo anga abwino"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "“Ndipo lowa m’munda Wanga (mnyumba ya mtendere wa muyaya)"
        }
    ]
}