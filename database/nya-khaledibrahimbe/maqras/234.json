{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "“Adachita tsinya (Mneneri) ndi kuyang’ana kumbali"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "“Chifukwa chakuti adamdzera wakhungu (kudzamfunsa zokhudzana ndi chipembedzo chake pamene iye adali kuyankhula ndi atsogoleri Achiquraishi)"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "“Nanga chingakudziwitse nchiyani kuti mwina iye angadziyeretse (pomvera ulaliki wako watsopano)"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "“Kapena akumbukira, ndipo kukumbukirako kumthandiza"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "“Koma amene wadzikwaniritsa (ndi chuma chake ndi mphamvu zake)"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "“Ameneyo ndi yemwe ukumchitira chidwi"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "“Palibe chilichonse pa iwe ngati sadziyeretsa"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "“Koma amene wakudzera uku akuthamanga (kufuna maphunziro ndi chiongoko)"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "“Ndipo iye akuopa (Allah mu mtima mwake)"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "“Za iye, iwe sukusamala, (ukuyikira chidwi kwa wina)"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "“Sichoncho! Ndithudi iyi (Qur’an) ndi chikumbutso (chenjezo)"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "“Basi, amene wafuna alangizika (ndi Qur’an, ndipo amene sakufuna msiye)"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "“(Malangizowa akuchokera) mmakalata olemekezeka (kwa Allah)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "“Apamwamba ndiponso oyeretsedwa (kumbiri iliyonse yopunguka)"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "“Omwe ali m’manja mwa Alembi (Angelo)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "“Olemekezeka, omvera"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "“Waonongeka (watembeleredwa) munthu. Nkotani kusayamika kwake kotereku"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "“Kuchokera mchinthu chanji chimene iye adamulenga"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "“Kuchokera ku dontho lamadzi (onyozeka) adamulenga, namkonzeratu mkalengedwe kosiyanasiyana"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "“Kenako adamfewetsera njira (yotulukira m’mimba mwa mai ake)"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "“Ndipo amamchititsa kuti amwalire namukumbula m’manda"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "“Kenako akadzafuna adzamuukitsa (pambuyo pa imfa)"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "“Ayi ndithu (munthu) sanakwaniritsebe zimene adamulamula Mbuye wake (Allah chingakhale wakhala nthawi yaitali pa dziko lapansi)"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "“Alingalire munthu (mmene chilili) chakudya chake"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "“Ndithu Ife timagwetsa mvula yambiri (kuchokera ku mitambo)"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "“Kenako timaing’amba nthaka kuti mmera utuluke"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "“Ndipo timameretsa m’menemo njere (ya chakudya cha anthu ndi zina zimene amasunga mnkhokwe)"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "“Ndi mphesa ndi msipu"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "“Ndi mzitona (wabwino) ndi (zipatso za) kanjedza"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "“Ndi minda yothothana nthambi za mitengo"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "“Ndi zipatso (zodyedwa ndi anthu) ndi msipu (wodyedwa ndi nyama)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "“(Tazimeretsa zimenezo kuti) zikondweretse inu ndi ziweto zanu"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "“Choncho likadzafika lipenga logonthetsa mkhutu (ndi kuumitsa makosi)"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "“Patsikuli munthu adzathawa m’bale wake"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "“Mayi wake ndi bambo wake"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "“Mkazi wake ndi ana ake"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "“Munthu aliyense mwa iwo, tsiku limenelo adzakhala ndi zakezake zotangwanika nazo. (Sadzalabadira za anzake)"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "“Tsiku limenelo nkhope zina zidzakhala zowala"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "“Zosekelera ndi zachimwemwe (chifukwa cha nkhani yabwino ya ku Munda wamtendere)"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "“Ndipo nkhope zina tsiku limenelo zidzakhala zokutidwa ndi fumbi"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "“Mdima udzazikuta"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "“Iwo ndi anthu osakhulupirira oipa (olakwira Allah)"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "“Pamene dzuwa lidzakulungidwe (ndikuchotsedwa kuwala kwake)"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "“Ndi pamene nyenyezi zidzathothoke (ndi kuchoka dangalira lake)"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "“Ndi pamene mapiri adzayendetsedwe (kuchoka mmalo mwake)"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "“Ndi pamene ngamira zabere lamiyezi khumi zidzasiidwe (zopanda oziyang’anira)"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "“Ndi pamene nyama za mtchire zidzasonkhanitsidwe pamodzi (kuchokera mmalo osiyanasiyana chifukwa chakuopsa kwakukulu kwa tsikulo)"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "“Ndi pamene nyanja zidzayatsidwe moto"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "“Ndi pamene mizimu idzalumikizidwe (ndi matupi ake)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "“Ndi pamene mwana wamkazi yemwe adaikidwa m’manda wamoyo adzafunsidwe"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "“Ndi tchimo lanji adaphedwera"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "“Ndi pamene makalata (momwe mudalembedwa zochita za aliyense) adzatambasulidwe ndi kugawidwa (kuti awerengedwe)"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "“Ndi pamene thambo lidzayalulidwe (kuchoka mmalo mwake)"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "“Ndi pamene Jahena idzasonkhezeredwe mwamphamvu"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "“Ndi pamene Jannah idzayandikitsidwe"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "“(Zikadzachitika zimenezi) mzimu uliwonse udzadziwa zimene wabweretsa (zabwino ndi zoipa)"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "“Ndikulumbilira nyenyezi zimene zimabwerera masana ndi kutulukanso usiku"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "“Zomwe zimayenda kenako nkubisika"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "“Ndi usiku pamene ukulowa"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "“Ndi m’mawa kukamacha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "“Ndithu iyi (Qur’an) ndi liwu la mthenga wa Allah (Jibril) wolemekezeka"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "“Mwini mphamvu ndi mwini ulemelero kwa Mwini Arsh (Mpando wa chifumu)"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "“Womveredwa kumeneko ndiponso wokhulupirika (pachivumbulutso)"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "“Ndipo m’bale wanuyu siwamisala ayi"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "“Ndithu ndikulumbira kuti (iye Mtumiki) (s.a.w) adamuona (Jibril) mchizimezime (chakum’mawa) chooneka bwino"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "“Ndipo sali iye (Mtumiki) waumbombo ndi chivumbulutso (koma amafikitsa zonse ndi kuziphunzitsa kwa anthu)"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "“(Chivumbulutso chomwe chavumbulutsidwachi kwa iye) si mawu a satana wothamangitsidwa (mchifundo cha Allah)"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "“Nanga mukupita kuti"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "“(Qur’ani) iyi sichina koma ndi chikumbutso cha zolengedwa zonse"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "“Kwa yemwe mwa inu akufuna kuyenda mu njira yoongoka"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "“Ndipo simungafune chinthu mwa inu nokha pokhapokha atafuna Allah Mbuye wa zolengedwa zonse"
        }
    ]
}