{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Savgand ʙa osmonu ʙa on ci dar saʙ ojad"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Va tu ci doni, ki on ci dar saʙ ojad, cist"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Sitoraest duraxsanda"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hec kas nest, ki ʙar u nigahʙone naʙosad"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Pas odami ʙingarad, ki az ci ciz ofarisa sudaast"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Az oʙe cahanda ofarida sudaast"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "ki az mijoni pustu sina ʙerun meojad"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Xudo ʙa ʙozgardonidani u tavonost"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "ruze, ki rozho (sirho) oskor mesavand"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Uro na quvvatest, va na jovare"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Qasam ʙa osmoni ʙozʙoranda"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Qasam ʙa zamini rujoni sikofxurda, (ʙaroi gijoh)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ki in kitoʙ haqro az ʙotil cudo kunad"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "va suxani hazl nest"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onon hilae meandesand"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "va Man ham hilae meandesam"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Pas kofironro muhlat deh andak muhlatason deh"
        }
    ]
}