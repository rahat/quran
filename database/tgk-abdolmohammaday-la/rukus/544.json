{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Ba ƣaflat kasid sumoro faxr kardan ʙa ʙisjorii molu farzand"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "to ʙa gurho rasided"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Haqqo, ki ʙa zudi xohed donist"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Boz ham haqqo, ki ʙa zudi xohed donist"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Haqqo agar az rui jaqin ʙidoned"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "alʙatta, cahannamro xohed did"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sipas ʙa casmi jaqinas xohed did"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "sipas dar on ruz sumoro az ne'mathoi dunjavi ʙozxost mekunand"
        }
    ]
}