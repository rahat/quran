{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Ore, savgand ʙa moh"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Va savgand ʙa saʙ, cun ruj ʙa raftan orad"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "va savgand ʙa suʙh cun parda ʙarafkanad"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "ki in jake az hodisahoi ʙuzurg ast"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Tarsonandai odamijon ast"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Baroi har kas az sumo, ki xohad, pes ojad (ʙo amali nek) jo az paj ravad (ʙo kufru nofarmoni)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Har kas garavgoni korest, ki kardaast"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "ƣajri ahli sa'odat"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "ki dar ʙihistho nisastaand va mepursand"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "az gunohkoron"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "ki ci ciz sumoro ʙa cahannam kasonid"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Megujand: «Mo az namozguzoron naʙudem"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "va ʙa darveson ta'om namedodem"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "va ʙo onon, ki suxani ʙotil meguftand, hamovoz mesudem"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "va ruzi qijomatro duruƣ mesumoridem"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "to margi mo faro rasid»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Pas safo'ati safo'atkunandagon foidaason naʙaxsad"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Ci sudaast, ki az in pand ruj megardonand"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Monandi xaroni ramida"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ki az ser megurezand"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "ʙalki har jak az onho mexohad, ki nomahoe ku soda ʙa u doda savad"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Ore, ki az oxirat nametarsand"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Ore, ki in Qur'on pandest"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "har ki xohad onro ʙixonad"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Va pand namegirand, ʙe on ki Xudo xohad. U sojoni on ast, ki az U ʙitarsand. Va u sojoni ʙaxsoidan ast"
        }
    ]
}