{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Az ci ciz (hamdigarro) mepursand"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Az on xaʙari ʙuzurg, (qijomat)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ki dar on ixtilof mekunand"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ore, ʙa zudi xohad donist"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Boz ham, ore, ʙa zudi xohand donist"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Ojo Mo zaminrro ʙistare nasoxtem"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Va kuhhoro mexhoe"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Va sumoro cuft-cuft ofaridem"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Va xoʙatonro ossisaton gardonidem"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Va saʙro pusisaton qaror dodem"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Va ruzro vaqti talaʙi ma'isat. (kasʙ)"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Va ʙar ʙoloi saraton haft osmoni ustuvor ʙino kardem"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Va caroƣe ravsan ofaridem. (oftoʙ)"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Az aʙrhoi ʙoronzoj oʙe farovon nozil kardem"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "to ʙo on donavu naʙot ʙirujonem"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "va ʙustonhoi anʙuh (serdaraxt)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Alʙatta ruzi dovari ruzest mu'ajjan"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Ruze, ki dar sur damida savad, va sumo guruhguruh ʙijoed"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Osmon sikofta savad va har sikof dare ʙosad"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Va kuhho ravon savand va saroʙ gardand"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cahannam dar intizor ʙosad"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Sarkasonro ʙozgastangohest"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Zamone daroz dar on co ʙosand"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Na xunuki casandu na oʙ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "faqat oʙi cusonu xunu cirk. (nusand)"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "In cazoest muvofiqi kirdor"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Zero onon ʙa ruzi hisoʙ umed nadostand"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Va ojoti Moro ʙa saxti duruƣ meʙarovardand"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Va Mo hama cizro dar, kitoʙe sumora kardaem"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Pas ʙicased, ki faqat ʙar azoʙi sumo xohem afzud"
        }
    ]
}