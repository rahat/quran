{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Har oina (Alʙatta) daraxti zukkum"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "ta'omi gunohkoron ast"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Monandi misi gudoxta dar sikamho mecusad"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Monandi cusidani oʙi cuson"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Bigiredas va ʙa saxti ʙa mijoni cahannamas ʙikased"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "va ʙar saras oʙi cuson ʙirezed, to sikanca savad"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Bicas, ki tu ƣoliʙu ʙuzurrvori"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "In hamon cizest, ki dar on sak mekarded"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Parhezkoron dar coi amne hastand"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "dar ʙoƣhovu casmasorho"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "liʙoshoe az sundusu istaʙraq mepusand va ruʙarui ham mesinand"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Hamcunin hurul'ajnro (huroni faroxcasm) ʙa hamsarijason darovarem"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Dar osoistagi har mevaero, ki ʙixohand, metalaʙand"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Dar on co ta'mi margro namecasand, ƣajri hamon margi avvalin. Va onhoro Xudo az azoʙi cahannam nigoh dostaast"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "In ʙaxsisest az coniʙi Parvardigorat va in piruzii ʙuzurgest"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Mo adoi suxani xud ʙar zaʙoni tu oson kardem, ʙosad, ki pand girand"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Tu muntazir ʙos, ki onho niz muntazirand"
        }
    ]
}