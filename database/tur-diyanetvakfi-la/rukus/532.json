{
    "rukus": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Andolsun bu beldeye"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Ki sen bu beldedesin"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Ve andolsun babaya ve ondan meydana gelen cocuga"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Biz, insanı ( yuzyuze gelecegi nice ) zorluklar icinde yarattık"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Insan, hic kimsenin kendisine guc yetiremeyecegini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Pek cok mal harcadım \" diyor"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Kimse onu gormedi mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Biz ona iki goz vermedik mi"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Bir dil ve iki dudak"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Ona iki yolu ( dogru ve egriyi ) gosterdik"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Fakat o, sarp yokusu asamadı"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "O sarp yokus nedir bilir misin"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Kole azat etmek"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "Veya aclık gununde yemek yedirmektir"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "Yakınlıgı olan bir yetime"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "Veya hicbir seyi olmayan yoksula"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Sonra iman edenlerden, birbirlerine sabrı tavsiye edenlerden ve birbirlerine acımayı ogutleyenlerden olmaktır"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Iste bunlar sagdakilerdir"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Ayetlerimizi inkar edenler ise iste onlar soldakilerdir"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Cezaları, kapıları uzerlerine sımsıkı kapatılmıs bir atestir"
        }
    ]
}