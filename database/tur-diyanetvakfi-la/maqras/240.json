{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Kabirlerde bulunanların diriltilip dısarı atıldıgını dusunmez mi"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Ve kalplerde gizlenenler ortaya kondugu zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Suphesiz Rableri o gun onlardan tamamıyle haberdar"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Kapı calan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o kapı calan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O kapı calanın ne oldugunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Insanların, atesin etrafını sarmıs pervaneler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dagların da atılmıs renkli yune donustugu gundur (o Karia)"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "O gun kimin tartılan ameli agır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Iste o, hosnut edici bir yasayıs icinde olur"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Ameli yegni olana gelince"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Iste onun anası (yeri, yurdu) Haviye'dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Nedir o (Haviye) bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızgın ates"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Cokluk kuruntusu sizi o derece oyaladı ki"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır! Yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Elbette yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Gercek oyle degil! Kesin bilgi ile bilmis olsaydınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Mutlaka cehennem atesini gorurdunuz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra ahirette onu cıplak gozle goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Nihayet o gun (dunyada yararlandıgınız) nimetlerden elbette ve elbette hesaba cekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asra yemin ederim ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Insan gercekten ziyan icindedir"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Bundan ancak iman edip iyi ameller isleyenler, birbirlerine hakkı tavsiye edenler ve sabrı tavsiye edenler mustesnadır"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan cekistirmeyi, yuze karsı eglenmeyi adet edinen herkesin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki, toplamıs ve onu sayıp durmustur"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "malının kendisini ebedi kılacagını zanneder"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır! Andolsun ki o, Hutame'ye atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame'nin ne oldugunu bilir misin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah'ın, tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "(Yandıkca) tırmanıp kalplerin ta ustune cıkar"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O, onların uzerine kapatılıp kilitlenecektir"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(Bu atesin icinde) uzatılmıs sutunlara baglanmıslar"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbin fil sahiplerine neler etti, gormedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların kotu planlarını bosa cıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların ustune ebabil kuslarını gonderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "O kuslar, onların uzerlerine piskin tugladan yapılmıs taslar atıyordu"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Boylece Allah onları yenilip cignenmis ekine cevirdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys'e kolaylastırıldıgı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Evet, kıs ve yaz seyahatleri onlara kolaylastırıldıgı icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Onlar, su evin Rabbine kulluk etsinler, ki"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Kendilerini aclıktan doyuran ve her cesit korkudan emin kıldı"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste o, yetimi itip kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya tesvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Yazıklar olsun o namaz kılanlara ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar namazlarını ciddiye almazlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gosteris yapanlardır"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve hayra da mani olurlar"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "(Resulum!) Kuskusuz biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Simdi sen Rabbine kulluk et ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl sonu kesik olan, suphesiz sana hınc besleyendir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "Ey Muhammed! De ki: \"Ey kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Benim taptıgıma da sizler tapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben de sizin taptıgınıza tapacak dagilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Benim taptıgıma da sizler tapmıyorsunuz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim banadır"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah'ın yardımı ve zaferi geldigi"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Ve insanların boluk boluk Allah'ın dinine girmekte olduklarını gordugun vakit"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbine hamdederek O'nu tesbih et ve O'ndan magfiret dile. Cunku O, tevbeleri cok kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb'in iki eli kurusun! Kurudu da"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Malı ve kazandıkları ona fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alevli bir ateste yanacak"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Odun tasıyıcı olarak karısı da (atese girecek)"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Ve boynunda hurma lifinden bukulmus bir ip oldugu halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O, Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah sameddir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "O, dogurmamıs ve dogmamıstır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Onun hicbir dengi yoktur"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki:\"Ben agaran sabahın Rabbine sıgınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlıgı coktugu zaman gecenin serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Ve dugumlere ufurup buyu yapan ufurukculerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Ve kıskandıgı vakit kıskanc kisinin serrinden sabahın Rabbine sıgınırım"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: Sıgınırım ben insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Insanların Melikine (mutlak sahip ve hakimine)"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Insanların Ilahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "O sinsi vesvesenin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "O ki insanların goguslerine (kotu dusunceler)fısıldar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerek insanlardan(olan butun vesvesecilerin serrinden Allah'a sıgınırım)"
        }
    ]
}