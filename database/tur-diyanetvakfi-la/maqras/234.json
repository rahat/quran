{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber), yuzunu eksitti ve geri dondu"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Amanın kendisine gelmesinden oturu"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut ogut alacak da o ogut ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini (sana) muhtac gormeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yoneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa ki onun temizlenip arınmasından sen sorumlu degilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat kosarak sana gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ve (Allah'tan) korkarak gelenle"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır! Suphesiz bunlar bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen ondan (Kur'an'dan) ogut alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, degerli sahifelerdir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Tertemiz kılınmıs, yuce makamlara kaldırılmıs mukaddes sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Katiplerin ellerindedir"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Degerli ve guvenilir katiplerin"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan! Ne inkarcıdır"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah onu neden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden (spermadan) yarattı da ona sekil verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylastırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onun canını aldı ve kabre soktu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra diledigi bir vakitte onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır! (Insan) Allah'ın emrettigini yapmadı"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Insan, yedigine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Yagmurlar yagdırdık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra topragı goz goz yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu suretle orada ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzumler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinlikler, hurmalıklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Iri ve sık agaclı bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve cayırlar bitirdik"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(Butun bunlar) sizi ve hayvanlarınızı yararlandırmak icindir"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sagır eden o ses geldiginde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Iste o gun kisi kardesinden, kacar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Esinden ve cocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun, herkesin kendine yetip artacak bir derdi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gun bir takım yuzler parıl parıl"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Guler ve sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yine o gun birtakım yuzleri de keder burumus"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Huzunden kapkara kesilmistir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste bunlar kafirlerdir, gunahkarlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes katlanıp duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar (kararıp) dokuldugunde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar (sallanıp) yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiginde"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar toplanıp bir araya getirildiginde"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgında"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar (bedenlerle) birlestirildiginde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gomulen kıza, soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunah sebebiyle olduruldu? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amellerin yazılı oldugu) defterler acıldıgında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gokyuzu sıyrılıp alındıgında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem tutusturuldugunda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklastırıldıgında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kisi neler getirdigini ogrenmis olacaktır"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Simdi yemin ederim o sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yuvasına gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya yuz tuttugunda geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Agarmaya basladıgında sabaha andolsun ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "O (Kur'an), suphesiz degerli, bir elcinin (Cebrail'in) getirdigi sozdur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci guclu, Ars'ın sahibi (Allah'ın) katında cok itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O orada sayılan, guvenilen (bir elci) dir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız (Muhammed) de mecnun degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki, onu (Cebrail'i) apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gaybın bilgilerini (sizden) esirgemez"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O lanetlenmis seytanın sozu de degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal boyle iken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, herkes icin, bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dogru yolda gitmek isteyenler icin de"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}