{
    "chapter": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Ukukhuphisana ngokuwanqa ubutyebi kuyaniphambukisa (ekukhonzeni uAllâh)"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nide niye kubekwa emangcwabeni"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Yeha! Kungekudala niza kwazi"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Kwakhona yeha! Kungekudala niza kwazi"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Yeha! Ukuba benisazi ngolwazi oluqinisekileyo (iziphumo zokuzilibazisa ngokuqokelela ubutyebi beniya kurhoxa kuloo nto, nizixakekise ngokukhonza uAllâh)"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Inene niza kuwubona uMlilo odwanguzayo (wesiHogo)"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Kwakhona, niya kuwubona ngamehlo okwenyani"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Kananjalo\tngaloo\tMini\tniza\tkubuzwa\tngobumnandi (enabuxhamlayo)"
        }
    ]
}