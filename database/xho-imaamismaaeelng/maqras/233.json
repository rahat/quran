{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Kungantoni na oko baphikisana ngako"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "KungeeNdaba ezinkulu"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ezo bangenakuvumelana ngazo"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Yeha, inene kungekudala baza kwazi"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Kwakhona yeha, inene kungekudala baza kwazi"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "ASiwenzanga\tumhlaba\twaba\tngumphangalalo owandlalekileyo na"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Neentaba1 zaba zizikhonkwane"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Saza Sanidala ngambini"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Senza ukulala kwenu (kwaba lixesha) lokuphumla"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Senza ubusuku isigqumathelo"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Senza imini ixesha lokuxelengela ukuphila"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Sakha phezu kwenu amazulu asixhenxe omeleleyo"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Sabeka apho isibane esikhazimlayo"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sathoba amanzi ngobuninzi emafini emvula"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ukuze ngawo Sivelise imbewu nezityalo"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Nemiyezo eshinyeneyo"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Inene iMini yohlenga-hlengiso yinto esele imiselwe kakade"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Mini leyo, iXilongo liya kuvuthelwa nize nibuyiswe niziindimbane"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Namazulu avuleke ngokungathi ziingcango"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Neentaba zithi shwaka ngokungathi yinkohliso"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Inene isiHogo sihleli sincathamile"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Likhaya lokuhlala abo bangabagabadeli (abenzi bezono)"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Baya kuhlala apho kuso iminyaka ngeminyaka"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Akukho nto ipholileyo baya kukuyingcamla apho, kungekho nasiselo na kakade"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ngaphandle kolwelo3 olubilayo, nobubomvu"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Umvuzo ofanelekileyo (waboni)"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Kuba abazanga boyike kufakwa ngxoxweni (ngezenzo zabo)"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Basuka bathabatha imiqondiso yeThu njengobuxoki"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Kwaye yonke into Siyigcinile eNcwadini"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "(Kuya kuthiwa kubo): “Ngcamlani ke iziqhamo (zezenzo zenu) kuba akukho songezelelo eSiya kuninika sona ngaphandle kwesohlwayo!”"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Inene, kumalungisa iya kuba yimpumelelo"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "IMiyezo ebiyelweyo, nemidiliya"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "neentombi ezibudala bulinganayo"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Nendebe ezele qhu"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Akukho mampunge baya kuwava apho nabuxoki"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Umvuzo ophuma eNkosini yakho. Isipho esaneleyo"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "INkosi yamazulu nomhlaba, nako konke okuphakathi kuwo, uSolubabalo; Akukho namnye oya kuba nagunya lakuthetha naYe"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "IMini apho uMoya (oyiNgcwele) neengelosi ziya kuma ngemigca. Akukho namnye oya kuthetha ngaphandle kwalowo uya kuvunyelwa nguSozinceba, yaye uya kuthetha okulungileyo kuphela"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Leyo\tyiMini\tyeNyaniso!\tNgako\toko\tlowo\tufunayo makathabathe ukhuseleko ngeNkosi yakhe"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Inene Sinilumkisile ngesohlwayo esikufuphi. Mini leyo umntu aya kuzibona izenzo zezandla zakhe, aze athi umchasi- kholo: “Yeha kum! Akwaba bendiluthuli"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Ndifunga\tngezo\t(ngelosi)\tzirhola\t(imiphefumlo yabangcolileyo), ngokurhabaxa"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Nangezo zirhola (imiphefumlo yamalungisa) ngocoselelo"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Nangezo ziphaphazela, zindande (zithunywa imiyalezo yenceba)"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Zingxamele phambili ngokungathi ziselugqatsweni"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Zide zicwangcise (imiyalelo yeNkosi yazo) (xa kukhala iXilongo)"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "NgeMini\tukuvuthelwa\t(kweXilongo\tlokuqala)\tkuya kudlokovisa (indalo)"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Kulandele intshukumo emva kwentshukumo (xa kukhala elesibini)"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Iintliziyo ziya kubetha kabuhlungu ngaloo Mini"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Amehlo abe buthathaka (ondele phantsi)"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Bathi: “Ingaba ngenene siza kubuyiselwa kwimo yethu yamandulo na"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Nokuba sele singamathambo abolileyo?”"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Bathi: “Okokuba kunjalo, kuya kuba kukubuya okunelahleko (oko).”"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Inene, iya kuba sisikhalo esinye (seXilongo)"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Yabonani, baya kutyekezelwa ngaphandle (kwamangcwaba abo)"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Ingaba sele lifikile na ibali likaMûsâ kuwe"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Xa\tiNkosi\tyakhe Yaye Yambiza\tkwintili\t(engcwele) yaseTuwâ"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "(Yathi kuye): “Yiya kuFir’awn kuba sele egabadele!”"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Uthi kuye: “Akungethandi na ukuhlambuluka ezonweni"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Nokuba ndikukhokelele eNkosini yakho ukuze uYoyike?”"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ngoko (UMûsâ) wambonisa umqondiso omkhulu"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Kodwa uFir’awn akawamkela umqondiso, akasithobela nesikhokelo"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Emvakokowatshikila,wafulathelawazabalaza(ngokuchasene nomyalezo kaMûsâ)"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Wahlanganisa abantu bakhe, wenza isimemezo"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Wathi: “Mna ndiyinkosi yenu ephezulu”"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Kodwa uAllâh Wamhlasela, Wenza umzekelo ngaye kobu bomi nakuBomi oBuzayo"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Inene kule mbali kukho isifundo sakhe nabani na omoyikayo uAllâh"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Kunzima na ukudala nina kunezulu eliphezulu Alakhileyo"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Uluphakamisile uphahla lwalo, Walicwangcisa, Walinika imfezeko"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Ugqume ubusuku balo ngobumnyama Wavelisa imini yalo ngokukhanya"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Emva koko Wandlala umhlaba"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Waza apho kuwoWavelisa amanzi wawo nedlelo lawo"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Ukanti iintaba zona Uzigxumeke zaqina nkqi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "(Ukuze apho kuphume) isixhaso senu nemfuyo yenu"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Ke kaloku kwakufika intlekele enkulu"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Mini leyo umntu aza kuyikhumbula into abe eyizabalazela"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Ukanti uMlilo wesiHogo uya kubonakaliswa uthi thaa (kumntu wonke) obonayo"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Ke lowo ungumgabadeli (umenzi wobubi)"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Owakhetha ubomi beli hlabathi (elandela iminqweno yakhe kunentando ka-Allâh)"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Inene ikhaya lakhe liya kuba nguMlilo wesiHogo"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kodwa yena lowo waye waba noloyiko lokumiswa phambi kweNkosi yakhe (uAllâh), wazoyisa ekulandeleni iinkanuko zakhe ezikukungcola"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Inene iPaladesi iya kuba likhaya lakhe"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Wena (Muhammad) bakubuza ngeYure (bathi): liya kuba nini na ilixa (lokuzalisekiswa) kwayo"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Ayiloxanduva lwakho ukuzalisekiswa kwayo"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Inzaliseko yayo ixhomekeke eNkosini yakho"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Inene wena unguMlumkisi kulowo uyoyikayo"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Mhla bayibona (iya kuba ngathi) baphile (kulo mhlaba) injikalanga yayo okanye intsasa yayo (kuphela)"
        }
    ]
}