{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Ndifunga (ngeMimoya) evuthuzayo"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "(Nangamafu) athwala umthwalo onzima wamanzi"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Nangee(nqanawa) eziwiza kalula nangocoselelo"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Nangezo (ngelosi) zahlulahlula (izinto) ngokomyalelo (ka- Allâh)"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Inene oko nithenjiswe ngako kuyinyaniso"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Kananjalo inene imbuyekezo iza kwenzeka"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Ndifunga nangamazulu aneendlela"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Inene nina nahlukile ngeentetho"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Olahlekileyo\twakude\tkuyo\t(i’Kur’ân)\tngulowo ulahlekisiweyo"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Abatshabalalayo ngamaxoki"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Abaphantsi kwesigqubuthelo bengenanyameko"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Bayabuza, “Inini na iMini yembuyekezo?”"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "(Leyo) yiMini abaya kujingiswa ngayo eMlilweni"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "(Kananjalo kuza kuthiwa kubo): “Ngcamlani isohlwayo senu ke. Oku koko naningenamonde ngako.”"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Inene wona amalungisa aya kuba phakathi kweMiyezo nemithombo"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Esamkela oko iNkosi yawo Iwanike kona. Kaloku wona aye aba ngabenzi bokulungileyo kwangaphambili"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Wona ayelala kancinane ebusuku"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Nangeeyure eziphambi konyezi ayeye acele itarhu (kuAllâh)"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Kantinasebutyebinibawo(kwakuyekukhutshwe) amalungelo (abahlwempuzekileyo), abangqibi nababandazelekileyo"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Ke kaloku emhlabeni kukho imiqondiso kwabanyanisekileyo (elukholweni)"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Nakuni buqu. Kanti aniboni na"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Nasezulwini kukho imbonelelo yenu yako konke enithenjiswe ngako"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Ke kaloku (Ndifunga) ngeNkosi yamazulu nomhlaba, inene yona (i’Kur’ân) yinyaniso enjengokuba nithetha"
        }
    ]
}