{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Ndifunga ngesibhakabhaka nangondwendwe lwasebusuku (inkwenkwezi ekhazimla kakhulu)"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Yintoni\tna\tenokukucacisela\tokokuba\tundwendwe lwasebusuku yintoni na"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Yinkwenkwezi ekukhazimla kwayo kugqobhozelayo"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Umphefumlo ngamnye unomkhuseli phezu kwawo"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Ngoko ke umntu makajonge ukuba udalwe ngantoni na"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Udalwe ngamanzi atsawulayo"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Avela phakathi komqolo neembambo"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Inene uAllâh Uyakwazi ukuphinda ambuyisele (ebomini) kwakhona"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "NgeMini apho iimfihlelo ziya kuvavanywa"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Ngoko (umntu) akayi kuba namandla engayi kuba namncedisi"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Ndifunga ngesibhakabhaka (esiza nemvula) siphindaphinde"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Nangomhlaba ocazulukayo (xa kuhluma uhlaza kuwo)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Inene le (‘Kur’ân) liLizwi elihluza (inyani ebuxokini)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Yaye asiyonto yokonwabisa"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Inene bona baqulunqa iyelenqe ngawe (Muhammad)"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Kanti naM (oku kwaM) Ndiqulunqa icebo (ngokuchasene nabo)"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Khawubayekelele abangakholwayo, ubaphathe ngobunono okwethutyana"
        }
    ]
}