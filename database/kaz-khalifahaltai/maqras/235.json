{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Көк жарылған сәтте"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Жұлдыздар төгілген сәтте"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Теңіздер тасыған сәтте"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Қабырлар қопарылған сәтте"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Әркім ілгері не жіберілгенін,кейін не қалдырылғанын біледі"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Әй адамзат! Ардақты Раббың туралы сені не алдады"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Ол сондай Алла,сені жаратты.Толықтап теңестірді"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Ол,сені қалаған бейнеде құрастырды"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Жоқ,олай емес,дінді өтіріксінесіңдер"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Негізінен сендерге әлбетте бақылаушылар бар"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Ардақты жазушылар"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Олар не істегендеріңді біледі"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Шын мәнінде ізгілер,әлбетте нығымет ішінде болады"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Негізінен бұзықтар тозақта болады"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Олар қиямет күні тозаққа салынады"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Олар,одан ғайып бола алмайды"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Қиямет күнінің не екенін қайдан білесің"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Я,қиямет күннің не екенін қайдан білесің"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ол күні,Біреуге біреу қараяласуға еш нәрсе қолдан келмейді. Ол күні,әміп Аллаға тән. (С.88-А)"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Өлшеу,тартуда кеміткендерге нендей өкініш"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Олар қашан өлшеп алса,толық өлшеп алады да"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Қашан олар,өлшеп немесе тартып беретін болса; кемітеді"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Олар қайта тірілетіндіктерін ойламай ма"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Ол зор күн үшін"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Ол күні адамдар,бүкіл әлменің Раббының алдында тұрады"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Олай емес. Негізінен бұзықтардың дәптері төменгі орында болады"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Төменгі орынның не екенін қайдан білесің"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Ол жазулы бір кітап"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "Ол күні,жасынға шығарушыларға нендей өкініш"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Олар,сондай қиямет күнін өтіріксінгендер"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Оны,шектен шыққан,күнәкар өтіріксінеді"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Қашан оған аяттарымыз оқылса: ''Бұрынғылардың ертегісі'' деді"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Жоқ,бәкім олардың жүректерін істеген қылықтарының таты басты"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Жоқ,олай емес. Негізінде олар ол күні Раббыларының дидарыннан махрұм қалады"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Сосын олар,әлбетте тозаққа кіреді"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Сосын: ''Міне сендердің өтірік дегендерің осы!'', -деліндеді"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Жоқ, олай емес. Негізінен ізгілердің дәптері әрине жоғарғы орында болады"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "Жоғарғы орынның не екенін қайдан білесің"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Ол жазулы бір кітап"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Оны,Аллаға жақын періштелер бақылайды"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Негізінен ізгілер,әрине нығымет ішінде болады"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Олар диувандардың үстінде (Алланың нығыметтеріне) қарайды"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Олардың бақытқа бөленгендіктерін шырайларынан таныйсың"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Олар,мөрленген ішімдіктен сусындатылады"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Оның сарқыны жұпар аңқиды.Жарысушылар,осыған жарыссын"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Оның қоры, Тәсним бастауынан"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "Ол бастаудан Аллаға жақын болғандар ішеді"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Расында күнәкарлар,иман келтіргендерге күлетін еді"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Олар жандарынан өткенде,ымдасатын еді"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Олар үйлеріне қайтып барған кезде,күңкілдесетін еді"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Қашан олар Мұсылмандарды көрсе : «Сөз жоқ, адасқандар » дейтін еді"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Олар,Мұсылмандарға бақылаушы етіліп жіберілмеді"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Ал енді бүгін мүміндер.кәпірлерге күледі"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Олар тақтардың үстінде қарайды"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "«Кәпірлер,істегендерінің пайдасын көрді ме?»"
        }
    ]
}