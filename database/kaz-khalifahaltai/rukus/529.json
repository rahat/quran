{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "(Мұхаммед Ғ.С) ұлы Раббыңның атын дәріпте"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ол сондай Алла; жаратып,толықтаған"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ол сондай Алла,шамалап оңғарған"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ол сондай Алла,жайылысты жаратқан"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Сосын оны қапқара қоқымға айналдырған"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "(Мұхаммед Ғ.С) саған Құран оқытамыз ; сонда оны ұмытпайсың"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Бірақ,Алланың қалағаны босқа. Негізінде Ол,көрнеу,көместі біледі.(С,6А)"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Саған оңай болғанды қолайластырамыз"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Пайда береті болса,насихат ет"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Әлде кім Алладан қорықса,үгіт алады"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Сорлы болғандар одан бой тежейді"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ол,сондай зор тозаққа салынады"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Сосын ол арада өлмейді де тірілмейді"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Әлде кім тазарса,ол кұтылады"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ол,Раббының атын еске алып,намаз оқыды.(Бұл,айт намазыүБ.Ж.М)"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Бірақ сендер дүние тіршілігін артық көресіңдер"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ақирет хайырлы да тұрақты"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Негізінн бұл үкімдер бұрынғы нұсқаларда бар"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ыбырайым,Мұса (Ғ.С) лардың нұсқаларында"
        }
    ]
}