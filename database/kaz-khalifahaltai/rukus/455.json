{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Соғып ұшырушы желдерге"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Мол жаңбыр көтеруші бұлттарға"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Жеңіл жүруші кемелерге"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Істі бөлуші періштелерге серт"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Шын мәнінде сендерге уәде етілген қиямет әрине рас"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Әлбетте қиямет болады"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Жолдары бар аспанға серт"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Қүмәнсыз сендер талас-тартыс сөздесіңдер"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Шындықтан бұрылған бұрылады"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Ой жорушылар құрысын"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Міне солар, білімсіздік ішінде жаңылуда"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Олар: \"Қиямет қашан\" деп сұрайды"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Ол, олардың отқа жағылатын күні"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Оларға: \"Азаптарыңды татыңдар! Асығып, тілегендерің осы\" (делінеді)"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Шәксіз тақуалар бақшаларда, бұлақтарда болады"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Олар, өздеріне Раббыларының бергенін алады. Өйткені олар, бұдан бұрын жақсылық істеуші еді"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Олар түнде аз ғана ұйықтаушы еді"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Олар таң сәрілерде жарылқану тілеуші еді"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Олардың малдарында; сұрағанға да сұрамағанға да тиесі бар"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Жер жүзінде нак сенушілерге дәлелдер бар"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Сондай-ақ өздеріңде де бар. Көрмейсіңдер ме"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Сендердің несібелерің әрі уәде етілген нәрселер көкте"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Көк пен жердің Раббына серт. Штбәсыз бұл, сендердің сөйлегендерің сияқты рас. (Бір-біріңе сөйлеген сөздерің қандай рас болса, сондай рас)"
        }
    ]
}