{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Расында тақуалар, саяларда, бастауларда болады"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Көңілдері соққан жемістерде"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "(Оларға): \"Істеген ғамалдарың арқасында жеңдер, ішіңдер; сіңімді болсын\" (делінеді)"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Расында жақсылық істеушілерді осылайша сыйлаймыз"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Жасынға шығарушыларға ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "(Әй кәпірлер!) Жеңдер, аздап пайдаланыңдар. Расында күнәкарсыңдар"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Жалғанға саюшыларға ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Оларға: \"Иіліңдер\" делінсе, иілмейді"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Жасынға шығарушыларға, ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Ал енді олар, бүл Құраннан кейін қайсы сөзге сенеді"
        }
    ]
}