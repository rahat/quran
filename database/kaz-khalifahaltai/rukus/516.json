{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Жалғасты жіберілгендерге"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Қатты есіп, ұшырушыларға"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Тарқатқан сайын тарқатушыларға"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Айырған сайын айырушыларға"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Сосын зікір тастаушыларға"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Сылтау түрінде мейлі ескерту түрінде болсын, осыларға серт. (Бұл аяттардағы ант етілген нәрселерді Алла (Т.) ашық баян етпеген. Мүфәссірлер бұл жөнде түрлі көз қарастар білдірген. Мысалы: Періштелер, 2-Желдер, 3-Құран Кәрим, 4-Пайғамбарлар. Не бәрі жел, не бәрі періштелер"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Шын мәнінде сендерге уәде етілген (қиямет) әлбетте болады"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Жұлдыздар сөнген сәтте"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Көк жарылғанда"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Таулар үгітіліп, ұшырылғанда"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Пайғамбарлардың уақты жеткен кезде"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Қайсы күнге кешіктіріліп еді"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Шешім күніне"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ол шешім күнін қайдан білесің"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Ол күні, жасынға шығарушыларға нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Бұрынғыларды жоқ етпедік пе"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Сосын кейінгілерді де. Солардың аяғын құштырамыз"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Күнәкарларға осылай істейміз"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Жасынға шығарушылар үшін сол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Сендерді болымсыз судан жаратпадық па"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Сондай оны берік бір жерде (жатырда) етпедік пе"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Белгілі бір мерзімге дейін"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Оның тағдырын мөлшерледік. Нендей толық күшке иеміз"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Жасынға шығарушыларға сол қүні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Жер жүзін бір жиналыс жері қылмадық па"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Тірілерге де өлілерге де"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Жер жүзінде асқар таулар жасап, сендерді дәмді сумен суардық"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Жасынға шығарушыларға ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(Ол күні оларға): \"Өтірік деген нәрселеріңе қарай жүріңдер"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Үш бунақты түнекке қарай кетіңдер\" (делінеді)"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ол, көлеңке болмайды да жалыннан қорғамайды"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Өйткені тозақ сарайдай ұшқын атады"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Сары түйелердей"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Жасынға шығарушыларға ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Ол күні олар сөйлемейді"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Сондай-ақ олардың желеулетулеріне рұхсат берілмейді"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Жасынға шығарушыларға ол күні нендей өкініш"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ол шешім күні, сендерді де бұрынғыларды да жинаймыз"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Бір әдістерің бар болса, Маған қолданыңдар"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Жасынға шығарушыларға ол күні нендей өкініш"
        }
    ]
}