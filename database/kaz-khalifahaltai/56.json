{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Қиямет уақиғасы болған кезде"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Оның болуын өтірік деуші болмас"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "(Ол) төмендетеді, жоғарлатады"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Сол уақытта жер тұтас сілкіндіріледі"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Таулар мүлде үгітіледі"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Ұшқан тозаңдай болады"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Сол уақытта сендер үш бөлімге бөлінесіңдер"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "(Ғамал дәптері оңынан берілген) оңшылдар, нендей жақсы ол оңшылдар"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "(Ғамал дәптері солынан берілген) солшылдар, нендей жаман ол солшылдар"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Озаттар алдынғы қатарда болады"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Міне солар, Аллаға жақын болғандар"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Ұжмақта нығметке бөленеді"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Бұрынғылардан көбірек"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Соңғылардан азырақ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Безенген тақтар үстінде"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Олардың үстінде ерсілі-қарсылы отырады"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Оларға өзгермес жастар айналып, қызмет етеді"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Ағып жатқан арақтан толтырылған шелектер, құмандар және кәселерменен"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ол; бас ауыртпайды да мас қылмайды"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Қалаған жемістері бар"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Көңілдері соққан құс еті бар"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Бота көз хұрлар бар"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Сақтаулы інжу сияқты"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Бұл істеген ғамалдарының сыйлығы"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Олар жаннатта бос не күнәлы сөз естімейді"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Бірақ \"Сәлем, сәлем\" деген сөзді ғана естиді"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Оңшылдар, ол оңшылдар нендей бақытты"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Олар тікенсіз сидыр (ағаштары)"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Жемістері үсті-үстіне шоғырланған мұз (банан) ағаштарының"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Созылған көлеңкенің астында болады"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Сарқырап аққан су бар"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Мол жеміс бар"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Ешбір түгеп, үзілмейтін, ешкім қорымайтын"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Биік төсектерде болады"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Расында хұр қыздарын жаңадан жаратамыз. (Немесе жаннаттық әйелдерді қайтадан жаратамыз.Б)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Оларды ер көрмеген қыздар етіп, жаратамыз"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Күйеуін сүйгіш құрдас болады"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Бұл айтылғандар, оңшылдар үшін болады"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Бір топ бұрынғылардан"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Бір топ соңғылардан"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Солшылдар, сол шолшылдар невдей сұмырай"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Олар ыстық бу, қайнар суда болады"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Қара түнек көлеңкеде болады"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Салқын да емес, жайлы да емес"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Өйткені олар, бұдан бұрын (дүниеде) тоң мойын әуесқорлар еді"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Зор күнәда қасарысушы еді"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Өліп, топырақ және сүйектер болсақ та шын тірілеміз бе?\",- дейді"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Бұрынғы аталарымыз да тіріле ме?\",- (дейді)"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "(Мұхаммед Ғ.С.): \"Сөзсіз бұрынғылар да, соңғылар да.\",- де"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Әлбетте, мәлім күнде белгілі орынға жиналады\" (де)"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Сосын сендер әй адасқан өтірікшілер"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Әлбетте ағаштан, Заққұмнан жейсіңдер"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Одан қарындарыңды толтырасыңдар"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Оның үстіне қайнар судан ішесіңдер"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Шөлдеген түйеше, сіміресіңдер"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Міне олардың қиямет күнгі сыйлықтары"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Сендерді Біз жараттық. Сонда неге мойындамайсыңдар"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Сендер тамызған мәни суын көрдіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Оны сендер жаратасыңдар ма? Немесе Біз жаратмыз ба"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Біз араларыңда өлімді белгіледік. Бізден ешкім озалмайды"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Сендердің бейнелеріңді өзгертіп, сендер білмегенді жарата аламыз"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Расында бұрынғы жаратуды білесіңдер, ендеше түсінбейсіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ал енді еккендеріңді көрдіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Оны сендер өсіресіңдер ме? Не Біз өсіреміз бе"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Егер қаласақ, оны қоқымға айналдырар едік. Сонда күңкілдесе берер едіңдер"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Расында зиянға ұшырадық"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Тіпті мүлде бос қалдық\" (дер едіңдер)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ішкен суларыңды көрдіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Оны бұлттан сендер жаудырасыңдар ма? Немесе Біз жаудырамыз ба"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Егер қаласақ оны ащы қылар едік. Ендеше, шүкір етпейсіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Жаққан оттарыңды көрдіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Оның ағашын сендер жараттыңдар ма? немесе Біз жараттық па"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Біз оны бір ескерткіш және жүргіншілер үшін пайдалы қылдық"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "(Мұхаммед Ғ.С.) Ендеше Раббыңды ұлы атымен дәріпте"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Ал енді жұлдыздардың орындарына серт етемін"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Егер білсеңдер, ол, зор серт"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Шын мәнінде ол ардақты Құран"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Кітапта (Лаухы Махфүзда. Б.М.Р.) сақтаулы"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Оны тап-таза болғандар ғана ұстайды. (Дәретсіз кісі ұстамайды)"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Әлемдердің Раббы жақтан түсірілген"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Сендер осы сөзді құр көресіңдер ме"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Расында берген ризыққа шүкір етудің орнына оны жасынға шығарасыңдар ма? (Ж)"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Ал жан жұтқыншаққа келген кезде"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Сол уақытта сендер қарап қаласыңдар"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Негізінде ол өліп бара жатқанға Біз жақынырақпыз. Сендер көрмейсіңдер"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Ал сонда егер жазаланбайтын болсаңдар"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Егер шын айтсаңдар, оның жанын қайтарыңдаршы"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Ал егер өлген кісі, Аллаға жақындардан болса"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Сонда оған рахатты шаттық әрі нығметті ұжмақ бар"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Ал енді өлі оңшылдардан болса"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Саған оңшылдардан, \"Сәлем\" (делінеді)"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Егер өлі, жасынға шығарушы адасқандардан болса"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Сонда оның қонақ асысы, қайнар судан болады"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Әрі тозаққа салынады"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Сөзсіз міне анық шындық осы"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "(Мұхаммед Ғ.С.) үлы Раббыңды атымен дәріпте"
        }
    ]
}