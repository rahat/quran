{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kogato slŭntseto bŭde obvito [v mrak]"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "i kogato zvezdite izpopadat"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "i kogato planinite bŭdat razdvizheni"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "i kogato bremennite kamili bŭdat izostaveni"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "i kogato zverovete bŭdat nasŭbrani"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "i kogato moretata zakipyat"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "i kogato dushite se sŭedinyat"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "i kogato zhivopogrebanoto momiche bŭde popitano"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "za kakŭv gryakh e bilo ubito"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "i kogato knigite [za delata] bŭdat razgŭrnati"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "i kogato nebeto bŭde premakhnato"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "i kogato Adŭt bŭde nazhezhen"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "i kogato Rayat bŭde priblizhen"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "togava vseki shte uznae kakvo e izvŭrshil"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "O, kŭlna se v zalyazvashtite planeti"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "dvizheshti se, skrivashti se"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "i v noshtta, kogato se zdrachava"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "i v utrinta, kogato se razvidelyava"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "toĭ [Koranŭt] e slovo na dostoen pratenik"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "imasht sila, utvŭrden pri Vladetelya na Trona"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Pokoryavat mu se [angelite] tam, doveren e"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "I ne e lud vashiyat drugar [Mukhammad]"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Toĭ go vidya na yasniya khorizont"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "I [vesti] ot nevedomoto ne ukriva"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "I ne e [Koranŭt] slovo na prokuden satana"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Kŭde otivate togava"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Tova e samo pouchenie za svetovete"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "za vseki ot vas, koĭto zhelae da e na Praviya pŭt"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Togava shte pozhelavate samo onova, koeto zhelae Allakh, Gospodŭt na svetovete"
        }
    ]
}