{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Proslavyaĭ prechistoto ime na tvoya Gospod, Vŭrkhovniya"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Koĭto sŭtvori i osŭrazmeri"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Koĭto pretseni i napŭti"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Koĭto izvazhda [trevata na] pasbishteto"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "i go prevrŭshta v cherno stŭrnishte"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Shte ti dadem da chetesh [Korana, o, Mukhammad] i ne shte zabravish"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "osven kakvoto Allakh pozhelae. Toĭ znae yavnoto i skritoto"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "I shte te ulesnim za lesnoto"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Napomnyaĭ, ako ima polza ot napomnyaneto"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Shte si spomni onzi, koĭto se strakhuva"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "I shte se otdrŭpne ot tova naĭ-loshiyat"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "koĭto shte gori v naĭ-golemiya Ogŭn"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Posle tam nito shte umre, nito shte e zhiv"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Spoluchil e onzi, koĭto se prechistva"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "i spomenava imeto na svoya Gospod, i ot·sluzhva molitvata"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Da, predpochitate zemniya zhivot"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "no otvŭdniyat e po-khubav i po-dŭlgotraen"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Tova e [zapisano] v predishnite pisaniya"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "pisaniyata na Ibrakhim i na Musa"
        }
    ]
}