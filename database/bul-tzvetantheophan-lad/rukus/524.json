{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kogato nebeto se razkŭsa"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "i kogato planetite se razprŭsnat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "i kogato moretata bŭdat otprishteni"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "i kogato grobovete bŭdat preobŭrnati"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "shte uznae vsyaka dusha kakvo e napravila predi i kakvo e ostavila"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O, choveche, kakvo te otvleche ot tvoya shtedŭr Gospod"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Koĭto te sŭtvori i sŭchleni, i osŭrazmeri"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "V kakŭvto obraz pozhela, v takŭv te naglasi"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Ala ne! Vie vzimate za lŭzha Vŭzmezdieto"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "No ima nad vas [angeli-] nadzirateli"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "blagorodni, zapisvashti"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Znayat kakvo vŭrshite"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Pravednitsite shte sa v blazhenstvo"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "a razpŭtnitsite shte sa v Ogŭn"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Shte goryat tam v Sŭdniya den"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "i ne shte izbyagat ot nego"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "No otkŭde da znaesh ti kakvo e Sŭdniyat den"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "I pak - otkŭde da znaesh ti kakvo e Sŭdniyat den"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Denyat, v koĭto nikoĭ ne shte e ot polza na drug - povelyata v tozi Den prinadlezhi na Allakh"
        }
    ]
}