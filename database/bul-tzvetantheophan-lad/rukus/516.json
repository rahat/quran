{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Kŭlna se v izprashtanite pored"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "i v bushuvashtite burno"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "i v prŭskashtite navred"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "i v razdelyashtite yasno"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "i v donasyashtite otkrovenie"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "s izvinenie ili preduprezhdenie"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "onova, koeto vi e obeshtano, shte se sbŭdne"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Kogato zvezdite bŭdat ugaseni"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "i kogato nebeto bŭde raztsepeno"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "i kogato planinite bŭdat razpileni"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "i kogato za pratenitsite bŭde opredeleno vreme"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "za koĭ den byakha ot·srocheni"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Za Denya na razdelenieto"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "A ti otkŭde da znaesh kakvo e Denyat na razdelenieto"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Ne pogubikhme li Nie predtsite"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Kŭm tyakh shte dobavim i setnite"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Taka se otnasyame s prestŭpvashtite"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Ne vi li sŭtvorikhme Nie ot nishtozhna voda"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "I ya slozhikhme na sigurno myasto"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "za opredelen srok"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "I sme sposobni. I kak prekrasni sa sposobnite"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Ne storikhme li zemyata da sŭbere"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "i zhivi, i mŭrtvi"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "i polozhikhme vŭrkhu neya nepoklatimi visoki planini, i vi dadokhme za piene pryasna voda"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "“Trŭgnete kŭm onova, koeto otrichakhte"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Trŭgnete kŭm syankata [na Ada] s tri razkloneniya"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "koyato ne nosi prokhlada i ne izbavya ot plamŭtsite"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Te prŭskat iskri, kolkoto dvortsi"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "syakash sa zhŭlti kamili.”"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Tova e Denyat, v koĭto ne shte progovoryat"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "I ne shte im bŭde pozvoleno da se opravdavat"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Gorko v tozi Den za otrichashtite"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Tova e Denyat na razdelenieto. Sŭbirame vi s predtsite"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "I ako imate kovarstvo, kovarstvaĭte sreshtu Men"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Gorko v tozi Den za otrichashtite"
        }
    ]
}