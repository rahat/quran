{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Wurde dir die Mitteilung über die Umhüllende zuteil"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Es sind Gesichter an diesem Tag demütig"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "arbeitend, erschöpft"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "sie werden in ein sehr heißes Feuer hineingeworfen"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "sie werden aus einer siedenden Quelle getränkt"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Für sie gibt es keine Speise außer von getrocknetem Dornengewächs"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "das weder ernährt, noch den Hunger stillt"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Es sind Gesichter an diesem Tag wohlergehend"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "mit ihrem Anstreben zufrieden"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "in einer hohen Dschanna"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Du hörst darin kein sinnloses Gerede"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Darin gibt es eine fließende Quelle"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Darin sind gehobene Liegen"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "und bereitgestellte Kelche"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "und aufgereihte Kissen"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "und verteilte Teppiche"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Schauen sie etwa nicht zu den Kamelen, wie sie erschaffen wurden"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "und zum Himmel, wie er gehoben wurde"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "und zu den Bergen, wie sie hingestellt wurden"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "und zu der Erde, wie sie ausgebreitet wurde"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "So ermahne! Du bist doch nur ein Ermahner"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "du bist über sie kein Verfügender"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Außer demjenigen, der den Rücken kehrte und Kufr betrieb"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "den wird ALLAH dann mit der größten Peinigung peinigen"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Gewiß, zu Uns ist ihre Rückkehr"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "dann gewiß, Uns obliegt ihre Abrechnung"
        }
    ]
}