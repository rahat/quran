    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Kennst du denjenigen, der den Din ableugnet"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Also dieser ist derjenige, der die Waise wegstößt"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "und zur Speisung des Bedürftigen nicht anspornt"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Also Niedergang sei den des rituellen Gebets Verrichtenden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "denjenigen, die ihrem rituellen Gebet gegenüber achtlos sind"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "denjenigen, die Riyaa betreiben"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "und die Utensilien verweigern"
        }
    ]
}