{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "(Ey kafirlər!) Sizi yaratmaq cətindir, yoxsa goyu ki (Allah) onu yaratdı"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Qubbəsini ucaltdı, duzəldib nizama saldı"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecəsini qaranlıq, gunduzunu isıqlı etdi"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra da yeri dosəyib (yayıb) duzəltdi (ustundə gəzmək və yasamaq ucun onu yararlı hala saldı)"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu və otlagını cıxartdı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "(Orada) dagları yerləsdirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "(Butun bunlar) sizin və heyvanlarınızın istifadəsi ucundur"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "O boyuk bəla (qiyamət) gələndə"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gun insan nələr etdiyini (dunyadakı butun yaxsı, pis əməllərini) yadına salacaqdır"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cəhənnəm də hər gorənə gorunəcəkdir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Kim (dunyada) azgınlıq etmissə"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dunyanı (axirətdən) ustun tutmussa"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Subhəsiz ki, onun məskəni Cəhənnəmdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Amma kim (qiyamət gunu) Rəbbinin huzurunda durmaqdan qorxmus və nəfsinə istəyini (səfvəti) qadagan etmissə"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Həqiqətən, onun yurdu Cənnətdir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "(Ya Peygəmbər! Musriklər) səndən o saatın nə vaxt gələcəyi (qiyamətin nə vaxt qopacagı) barəsində sorusarlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sən onu (onun vaxtını) nə bilirsən"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onu sonuna qədər (butun təfərruatı ilə) bilmək ancaq sənin Rəbbinə məxsusdur"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sən ancaq ondan (qiyamətdən) xəbərdar edib cəkindirənsən"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu (qiyaməti) gordukləri gun (dunyada və ya qəbir evində) yalnız bir axsam, yaxud bir səhər qaldıqlarını sanacaqlar"
        }
    ]
}