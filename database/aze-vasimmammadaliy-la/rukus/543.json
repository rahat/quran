{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Urəkləri dəhsətə salan qiyamət"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nədir qiyamət"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Sən nə bilirsən (haradan bilirsən) ki, nədir qiyamət"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar kəpənək kimi ətrafa səpələnəcək (cəyirtkə kimi bir-birinə qatısacaq)"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar isə didilmis yun kimi olacaqdır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "(O gun) tərəzisi agır gələn (yaxsı əmələri pis əməllərdən cox olan) kimsə"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "(Cənnətdə) xos guzəran icində olacaq"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Tərəzisi yungul gələn (yaxsı əməlləri pis əməllərdən az olan) kimsənin isə"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Məskəni Haviyə (Cəhənnəmin dibi) olacaqdır"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Sən nə bilirsən ki, o (Haviyə) nədir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O cox qızmar bir atəsdir"
        }
    ]
}