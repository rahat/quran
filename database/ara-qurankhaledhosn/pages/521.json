        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "یَوۡمَ هُمۡ عَلَى ٱلنَّارِ یُفۡتَنُونَ"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ذُوقُوا۟ فِتۡنَتَكُمۡ هَـٰذَا ٱلَّذِی كُنتُم بِهِۦ تَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "إِنَّ ٱلۡمُتَّقِینَ فِی جَنَّـٰتࣲ وَعُیُونٍ"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "ءَاخِذِینَ مَاۤ ءَاتَىٰهُمۡ رَبُّهُمۡۚ إِنَّهُمۡ كَانُوا۟ قَبۡلَ ذَ ٰ⁠لِكَ مُحۡسِنِینَ"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "كَانُوا۟ قَلِیلࣰا مِّنَ ٱلَّیۡلِ مَا یَهۡجَعُونَ"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "وَبِٱلۡأَسۡحَارِ هُمۡ یَسۡتَغۡفِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "وَفِیۤ أَمۡوَ ٰ⁠لِهِمۡ حَقࣱّ لِّلسَّاۤىِٕلِ وَٱلۡمَحۡرُومِ"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "وَفِی ٱلۡأَرۡضِ ءَایَـٰتࣱ لِّلۡمُوقِنِینَ"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "وَفِیۤ أَنفُسِكُمۡۚ أَفَلَا تُبۡصِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "وَفِی ٱلسَّمَاۤءِ رِزۡقُكُمۡ وَمَا تُوعَدُونَ"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "فَوَرَبِّ ٱلسَّمَاۤءِ وَٱلۡأَرۡضِ إِنَّهُۥ لَحَقࣱّ مِّثۡلَ مَاۤ أَنَّكُمۡ تَنطِقُونَ"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "هَلۡ أَتَىٰكَ حَدِیثُ ضَیۡفِ إِبۡرَ ٰ⁠هِیمَ ٱلۡمُكۡرَمِینَ"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "إِذۡ دَخَلُوا۟ عَلَیۡهِ فَقَالُوا۟ سَلَـٰمࣰاۖ قَالَ سَلَـٰمࣱ قَوۡمࣱ مُّنكَرُونَ"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "فَرَاغَ إِلَىٰۤ أَهۡلِهِۦ فَجَاۤءَ بِعِجۡلࣲ سَمِینࣲ"
        },
        {
            "chapter": 51,
            "verse": 27,
