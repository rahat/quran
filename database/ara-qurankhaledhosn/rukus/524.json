{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ إِذَا ٱلسَّمَاۤءُ ٱنفَطَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "وَإِذَا ٱلۡكَوَاكِبُ ٱنتَثَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "وَإِذَا ٱلۡبِحَارُ فُجِّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "وَإِذَا ٱلۡقُبُورُ بُعۡثِرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "عَلِمَتۡ نَفۡسࣱ مَّا قَدَّمَتۡ وَأَخَّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "یَـٰۤأَیُّهَا ٱلۡإِنسَـٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلۡكَرِیمِ"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "ٱلَّذِی خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "فِیۤ أَیِّ صُورَةࣲ مَّا شَاۤءَ رَكَّبَكَ"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "كَلَّا بَلۡ تُكَذِّبُونَ بِٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "وَإِنَّ عَلَیۡكُمۡ لَحَـٰفِظِینَ"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كِرَامࣰا كَـٰتِبِینَ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "یَعۡلَمُونَ مَا تَفۡعَلُونَ"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِی نَعِیمࣲ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "وَإِنَّ ٱلۡفُجَّارَ لَفِی جَحِیمࣲ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "یَصۡلَوۡنَهَا یَوۡمَ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "وَمَا هُمۡ عَنۡهَا بِغَاۤىِٕبِینَ"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ثُمَّ مَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "یَوۡمَ لَا تَمۡلِكُ نَفۡسࣱ لِّنَفۡسࣲ شَیۡـࣰٔاۖ وَٱلۡأَمۡرُ یَوۡمَىِٕذࣲ لِّلَّهِ"
        }
    ]
}