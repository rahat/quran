{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ إِذَا وَقَعَتِ ٱلۡوَاقِعَةُ"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "لَیۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "خَافِضَةࣱ رَّافِعَةٌ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "إِذَا رُجَّتِ ٱلۡأَرۡضُ رَجࣰّا"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وَبُسَّتِ ٱلۡجِبَالُ بَسࣰّا"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "فَكَانَتۡ هَبَاۤءࣰ مُّنۢبَثࣰّا"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وَكُنتُمۡ أَزۡوَ ٰ⁠جࣰا ثَلَـٰثَةࣰ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "فَأَصۡحَـٰبُ ٱلۡمَیۡمَنَةِ مَاۤ أَصۡحَـٰبُ ٱلۡمَیۡمَنَةِ"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "وَأَصۡحَـٰبُ ٱلۡمَشۡـَٔمَةِ مَاۤ أَصۡحَـٰبُ ٱلۡمَشۡـَٔمَةِ"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "وَٱلسَّـٰبِقُونَ ٱلسَّـٰبِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "أُو۟لَـٰۤىِٕكَ ٱلۡمُقَرَّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "فِی جَنَّـٰتِ ٱلنَّعِیمِ"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "وَقَلِیلࣱ مِّنَ ٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "عَلَىٰ سُرُرࣲ مَّوۡضُونَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "مُّتَّكِـِٔینَ عَلَیۡهَا مُتَقَـٰبِلِینَ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "یَطُوفُ عَلَیۡهِمۡ وِلۡدَ ٰ⁠نࣱ مُّخَلَّدُونَ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِأَكۡوَابࣲ وَأَبَارِیقَ وَكَأۡسࣲ مِّن مَّعِینࣲ"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا یُصَدَّعُونَ عَنۡهَا وَلَا یُنزِفُونَ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَـٰكِهَةࣲ مِّمَّا یَتَخَیَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَیۡرࣲ مِّمَّا یَشۡتَهُونَ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُورٌ عِینࣱ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَأَمۡثَـٰلِ ٱللُّؤۡلُوِٕ ٱلۡمَكۡنُونِ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَاۤءَۢ بِمَا كَانُوا۟ یَعۡمَلُونَ"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا یَسۡمَعُونَ فِیهَا لَغۡوࣰا وَلَا تَأۡثِیمًا"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "إِلَّا قِیلࣰا سَلَـٰمࣰا سَلَـٰمࣰا"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَأَصۡحَـٰبُ ٱلۡیَمِینِ مَاۤ أَصۡحَـٰبُ ٱلۡیَمِینِ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِی سِدۡرࣲ مَّخۡضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَطَلۡحࣲ مَّنضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَظِلࣲّ مَّمۡدُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَمَاۤءࣲ مَّسۡكُوبࣲ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَفَـٰكِهَةࣲ كَثِیرَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوعَةࣲ وَلَا مَمۡنُوعَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَفُرُشࣲ مَّرۡفُوعَةٍ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "إِنَّاۤ أَنشَأۡنَـٰهُنَّ إِنشَاۤءࣰ"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنَـٰهُنَّ أَبۡكَارًا"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرُبًا أَتۡرَابࣰا"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّأَصۡحَـٰبِ ٱلۡیَمِینِ"
        }
    ]
}