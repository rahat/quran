{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلطُّورِ"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "وَكِتَـٰبࣲ مَّسۡطُورࣲ"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "فِی رَقࣲّ مَّنشُورࣲ"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "وَٱلۡبَیۡتِ ٱلۡمَعۡمُورِ"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "وَٱلسَّقۡفِ ٱلۡمَرۡفُوعِ"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "وَٱلۡبَحۡرِ ٱلۡمَسۡجُورِ"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "إِنَّ عَذَابَ رَبِّكَ لَوَ ٰ⁠قِعࣱ"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "مَّا لَهُۥ مِن دَافِعࣲ"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "یَوۡمَ تَمُورُ ٱلسَّمَاۤءُ مَوۡرࣰا"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "وَتَسِیرُ ٱلۡجِبَالُ سَیۡرࣰا"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "فَوَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "ٱلَّذِینَ هُمۡ فِی خَوۡضࣲ یَلۡعَبُونَ"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "یَوۡمَ یُدَعُّونَ إِلَىٰ نَارِ جَهَنَّمَ دَعًّا"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "هَـٰذِهِ ٱلنَّارُ ٱلَّتِی كُنتُم بِهَا تُكَذِّبُونَ"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "أَفَسِحۡرٌ هَـٰذَاۤ أَمۡ أَنتُمۡ لَا تُبۡصِرُونَ"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "ٱصۡلَوۡهَا فَٱصۡبِرُوۤا۟ أَوۡ لَا تَصۡبِرُوا۟ سَوَاۤءٌ عَلَیۡكُمۡۖ إِنَّمَا تُجۡزَوۡنَ مَا كُنتُمۡ تَعۡمَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "إِنَّ ٱلۡمُتَّقِینَ فِی جَنَّـٰتࣲ وَنَعِیمࣲ"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "فَـٰكِهِینَ بِمَاۤ ءَاتَىٰهُمۡ رَبُّهُمۡ وَوَقَىٰهُمۡ رَبُّهُمۡ عَذَابَ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "كُلُوا۟ وَٱشۡرَبُوا۟ هَنِیۤـَٔۢا بِمَا كُنتُمۡ تَعۡمَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "مُتَّكِـِٔینَ عَلَىٰ سُرُرࣲ مَّصۡفُوفَةࣲۖ وَزَوَّجۡنَـٰهُم بِحُورٍ عِینࣲ"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "وَٱلَّذِینَ ءَامَنُوا۟ وَٱتَّبَعَتۡهُمۡ ذُرِّیَّتُهُم بِإِیمَـٰنٍ أَلۡحَقۡنَا بِهِمۡ ذُرِّیَّتَهُمۡ وَمَاۤ أَلَتۡنَـٰهُم مِّنۡ عَمَلِهِم مِّن شَیۡءࣲۚ كُلُّ ٱمۡرِىِٕۭ بِمَا كَسَبَ رَهِینࣱ"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "وَأَمۡدَدۡنَـٰهُم بِفَـٰكِهَةࣲ وَلَحۡمࣲ مِّمَّا یَشۡتَهُونَ"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "یَتَنَـٰزَعُونَ فِیهَا كَأۡسࣰا لَّا لَغۡوࣱ فِیهَا وَلَا تَأۡثِیمࣱ"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "۞ وَیَطُوفُ عَلَیۡهِمۡ غِلۡمَانࣱ لَّهُمۡ كَأَنَّهُمۡ لُؤۡلُؤࣱ مَّكۡنُونࣱ"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضࣲ یَتَسَاۤءَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُوۤا۟ إِنَّا كُنَّا قَبۡلُ فِیۤ أَهۡلِنَا مُشۡفِقِینَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ ٱللَّهُ عَلَیۡنَا وَوَقَىٰنَا عَذَابَ ٱلسَّمُومِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "إِنَّا كُنَّا مِن قَبۡلُ نَدۡعُوهُۖ إِنَّهُۥ هُوَ ٱلۡبَرُّ ٱلرَّحِیمُ"
        }
    ]
}