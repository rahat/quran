{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلذَّ ٰ⁠رِیَـٰتِ ذَرۡوࣰا"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "فَٱلۡحَـٰمِلَـٰتِ وِقۡرࣰا"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "فَٱلۡجَـٰرِیَـٰتِ یُسۡرࣰا"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "فَٱلۡمُقَسِّمَـٰتِ أَمۡرًا"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "إِنَّمَا تُوعَدُونَ لَصَادِقࣱ"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "وَإِنَّ ٱلدِّینَ لَوَ ٰ⁠قِعࣱ"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "وَٱلسَّمَاۤءِ ذَاتِ ٱلۡحُبُكِ"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "إِنَّكُمۡ لَفِی قَوۡلࣲ مُّخۡتَلِفࣲ"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "یُؤۡفَكُ عَنۡهُ مَنۡ أُفِكَ"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "قُتِلَ ٱلۡخَرَّ ٰ⁠صُونَ"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "ٱلَّذِینَ هُمۡ فِی غَمۡرَةࣲ سَاهُونَ"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "یَسۡـَٔلُونَ أَیَّانَ یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "یَوۡمَ هُمۡ عَلَى ٱلنَّارِ یُفۡتَنُونَ"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ذُوقُوا۟ فِتۡنَتَكُمۡ هَـٰذَا ٱلَّذِی كُنتُم بِهِۦ تَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "إِنَّ ٱلۡمُتَّقِینَ فِی جَنَّـٰتࣲ وَعُیُونٍ"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "ءَاخِذِینَ مَاۤ ءَاتَىٰهُمۡ رَبُّهُمۡۚ إِنَّهُمۡ كَانُوا۟ قَبۡلَ ذَ ٰ⁠لِكَ مُحۡسِنِینَ"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "كَانُوا۟ قَلِیلࣰا مِّنَ ٱلَّیۡلِ مَا یَهۡجَعُونَ"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "وَبِٱلۡأَسۡحَارِ هُمۡ یَسۡتَغۡفِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "وَفِیۤ أَمۡوَ ٰ⁠لِهِمۡ حَقࣱّ لِّلسَّاۤىِٕلِ وَٱلۡمَحۡرُومِ"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "وَفِی ٱلۡأَرۡضِ ءَایَـٰتࣱ لِّلۡمُوقِنِینَ"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "وَفِیۤ أَنفُسِكُمۡۚ أَفَلَا تُبۡصِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "وَفِی ٱلسَّمَاۤءِ رِزۡقُكُمۡ وَمَا تُوعَدُونَ"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "فَوَرَبِّ ٱلسَّمَاۤءِ وَٱلۡأَرۡضِ إِنَّهُۥ لَحَقࣱّ مِّثۡلَ مَاۤ أَنَّكُمۡ تَنطِقُونَ"
        }
    ]
}