{
    "hizbs": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞ ٱحۡشُرُوا۟ ٱلَّذِینَ ظَلَمُوا۟ وَأَزۡوَ ٰ⁠جَهُمۡ وَمَا كَانُوا۟ یَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "مِن دُونِ ٱللَّهِ فَٱهۡدُوهُمۡ إِلَىٰ صِرَ ٰ⁠طِ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وَقِفُوهُمۡۖ إِنَّهُم مَّسۡـُٔولُونَ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "مَا لَكُمۡ لَا تَنَاصَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بَلۡ هُمُ ٱلۡیَوۡمَ مُسۡتَسۡلِمُونَ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضࣲ یَتَسَاۤءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قَالُوۤا۟ إِنَّكُمۡ كُنتُمۡ تَأۡتُونَنَا عَنِ ٱلۡیَمِینِ"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قَالُوا۟ بَل لَّمۡ تَكُونُوا۟ مُؤۡمِنِینَ"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وَمَا كَانَ لَنَا عَلَیۡكُم مِّن سُلۡطَـٰنِۭۖ بَلۡ كُنتُمۡ قَوۡمࣰا طَـٰغِینَ"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فَحَقَّ عَلَیۡنَا قَوۡلُ رَبِّنَاۤۖ إِنَّا لَذَاۤىِٕقُونَ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فَأَغۡوَیۡنَـٰكُمۡ إِنَّا كُنَّا غَـٰوِینَ"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فَإِنَّهُمۡ یَوۡمَىِٕذࣲ فِی ٱلۡعَذَابِ مُشۡتَرِكُونَ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إِنَّا كَذَ ٰ⁠لِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِینَ"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إِنَّهُمۡ كَانُوۤا۟ إِذَا قِیلَ لَهُمۡ لَاۤ إِلَـٰهَ إِلَّا ٱللَّهُ یَسۡتَكۡبِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "وَیَقُولُونَ أَىِٕنَّا لَتَارِكُوۤا۟ ءَالِهَتِنَا لِشَاعِرࣲ مَّجۡنُونِۭ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بَلۡ جَاۤءَ بِٱلۡحَقِّ وَصَدَّقَ ٱلۡمُرۡسَلِینَ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إِنَّكُمۡ لَذَاۤىِٕقُوا۟ ٱلۡعَذَابِ ٱلۡأَلِیمِ"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وَمَا تُجۡزَوۡنَ إِلَّا مَا كُنتُمۡ تَعۡمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلَصِینَ"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أُو۟لَـٰۤىِٕكَ لَهُمۡ رِزۡقࣱ مَّعۡلُومࣱ"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فَوَ ٰ⁠كِهُ وَهُم مُّكۡرَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "فِی جَنَّـٰتِ ٱلنَّعِیمِ"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "عَلَىٰ سُرُرࣲ مُّتَقَـٰبِلِینَ"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "یُطَافُ عَلَیۡهِم بِكَأۡسࣲ مِّن مَّعِینِۭ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بَیۡضَاۤءَ لَذَّةࣲ لِّلشَّـٰرِبِینَ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لَا فِیهَا غَوۡلࣱ وَلَا هُمۡ عَنۡهَا یُنزَفُونَ"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وَعِندَهُمۡ قَـٰصِرَ ٰ⁠تُ ٱلطَّرۡفِ عِینࣱ"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كَأَنَّهُنَّ بَیۡضࣱ مَّكۡنُونࣱ"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضࣲ یَتَسَاۤءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قَالَ قَاۤىِٕلࣱ مِّنۡهُمۡ إِنِّی كَانَ لِی قَرِینࣱ"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "یَقُولُ أَءِنَّكَ لَمِنَ ٱلۡمُصَدِّقِینَ"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أَءِذَا مِتۡنَا وَكُنَّا تُرَابࣰا وَعِظَـٰمًا أَءِنَّا لَمَدِینُونَ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قَالَ هَلۡ أَنتُم مُّطَّلِعُونَ"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فَٱطَّلَعَ فَرَءَاهُ فِی سَوَاۤءِ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قَالَ تَٱللَّهِ إِن كِدتَّ لَتُرۡدِینِ"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "وَلَوۡلَا نِعۡمَةُ رَبِّی لَكُنتُ مِنَ ٱلۡمُحۡضَرِینَ"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أَفَمَا نَحۡنُ بِمَیِّتِینَ"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إِلَّا مَوۡتَتَنَا ٱلۡأُولَىٰ وَمَا نَحۡنُ بِمُعَذَّبِینَ"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إِنَّ هَـٰذَا لَهُوَ ٱلۡفَوۡزُ ٱلۡعَظِیمُ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لِمِثۡلِ هَـٰذَا فَلۡیَعۡمَلِ ٱلۡعَـٰمِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أَذَ ٰ⁠لِكَ خَیۡرࣱ نُّزُلًا أَمۡ شَجَرَةُ ٱلزَّقُّومِ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إِنَّا جَعَلۡنَـٰهَا فِتۡنَةࣰ لِّلظَّـٰلِمِینَ"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إِنَّهَا شَجَرَةࣱ تَخۡرُجُ فِیۤ أَصۡلِ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طَلۡعُهَا كَأَنَّهُۥ رُءُوسُ ٱلشَّیَـٰطِینِ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فَإِنَّهُمۡ لَـَٔاكِلُونَ مِنۡهَا فَمَالِـُٔونَ مِنۡهَا ٱلۡبُطُونَ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثُمَّ إِنَّ لَهُمۡ عَلَیۡهَا لَشَوۡبࣰا مِّنۡ حَمِیمࣲ"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثُمَّ إِنَّ مَرۡجِعَهُمۡ لَإِلَى ٱلۡجَحِیمِ"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إِنَّهُمۡ أَلۡفَوۡا۟ ءَابَاۤءَهُمۡ ضَاۤلِّینَ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فَهُمۡ عَلَىٰۤ ءَاثَـٰرِهِمۡ یُهۡرَعُونَ"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "وَلَقَدۡ ضَلَّ قَبۡلَهُمۡ أَكۡثَرُ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "وَلَقَدۡ أَرۡسَلۡنَا فِیهِم مُّنذِرِینَ"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فَٱنظُرۡ كَیۡفَ كَانَ عَـٰقِبَةُ ٱلۡمُنذَرِینَ"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلَصِینَ"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "وَلَقَدۡ نَادَىٰنَا نُوحࣱ فَلَنِعۡمَ ٱلۡمُجِیبُونَ"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "وَنَجَّیۡنَـٰهُ وَأَهۡلَهُۥ مِنَ ٱلۡكَرۡبِ ٱلۡعَظِیمِ"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وَجَعَلۡنَا ذُرِّیَّتَهُۥ هُمُ ٱلۡبَاقِینَ"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وَتَرَكۡنَا عَلَیۡهِ فِی ٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سَلَـٰمٌ عَلَىٰ نُوحࣲ فِی ٱلۡعَـٰلَمِینَ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "إِنَّا كَذَ ٰ⁠لِكَ نَجۡزِی ٱلۡمُحۡسِنِینَ"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا ٱلۡمُؤۡمِنِینَ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثُمَّ أَغۡرَقۡنَا ٱلۡـَٔاخَرِینَ"
        }
    ]
}