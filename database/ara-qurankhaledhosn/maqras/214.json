{
    "hizbs": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ إِذَا وَقَعَتِ ٱلۡوَاقِعَةُ"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "لَیۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "خَافِضَةࣱ رَّافِعَةٌ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "إِذَا رُجَّتِ ٱلۡأَرۡضُ رَجࣰّا"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وَبُسَّتِ ٱلۡجِبَالُ بَسࣰّا"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "فَكَانَتۡ هَبَاۤءࣰ مُّنۢبَثࣰّا"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وَكُنتُمۡ أَزۡوَ ٰ⁠جࣰا ثَلَـٰثَةࣰ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "فَأَصۡحَـٰبُ ٱلۡمَیۡمَنَةِ مَاۤ أَصۡحَـٰبُ ٱلۡمَیۡمَنَةِ"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "وَأَصۡحَـٰبُ ٱلۡمَشۡـَٔمَةِ مَاۤ أَصۡحَـٰبُ ٱلۡمَشۡـَٔمَةِ"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "وَٱلسَّـٰبِقُونَ ٱلسَّـٰبِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "أُو۟لَـٰۤىِٕكَ ٱلۡمُقَرَّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "فِی جَنَّـٰتِ ٱلنَّعِیمِ"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "وَقَلِیلࣱ مِّنَ ٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "عَلَىٰ سُرُرࣲ مَّوۡضُونَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "مُّتَّكِـِٔینَ عَلَیۡهَا مُتَقَـٰبِلِینَ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "یَطُوفُ عَلَیۡهِمۡ وِلۡدَ ٰ⁠نࣱ مُّخَلَّدُونَ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِأَكۡوَابࣲ وَأَبَارِیقَ وَكَأۡسࣲ مِّن مَّعِینࣲ"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا یُصَدَّعُونَ عَنۡهَا وَلَا یُنزِفُونَ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَـٰكِهَةࣲ مِّمَّا یَتَخَیَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَیۡرࣲ مِّمَّا یَشۡتَهُونَ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُورٌ عِینࣱ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَأَمۡثَـٰلِ ٱللُّؤۡلُوِٕ ٱلۡمَكۡنُونِ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَاۤءَۢ بِمَا كَانُوا۟ یَعۡمَلُونَ"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا یَسۡمَعُونَ فِیهَا لَغۡوࣰا وَلَا تَأۡثِیمًا"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "إِلَّا قِیلࣰا سَلَـٰمࣰا سَلَـٰمࣰا"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَأَصۡحَـٰبُ ٱلۡیَمِینِ مَاۤ أَصۡحَـٰبُ ٱلۡیَمِینِ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِی سِدۡرࣲ مَّخۡضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَطَلۡحࣲ مَّنضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَظِلࣲّ مَّمۡدُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَمَاۤءࣲ مَّسۡكُوبࣲ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَفَـٰكِهَةࣲ كَثِیرَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوعَةࣲ وَلَا مَمۡنُوعَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَفُرُشࣲ مَّرۡفُوعَةٍ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "إِنَّاۤ أَنشَأۡنَـٰهُنَّ إِنشَاۤءࣰ"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنَـٰهُنَّ أَبۡكَارًا"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرُبًا أَتۡرَابࣰا"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّأَصۡحَـٰبِ ٱلۡیَمِینِ"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "وَثُلَّةࣱ مِّنَ ٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "وَأَصۡحَـٰبُ ٱلشِّمَالِ مَاۤ أَصۡحَـٰبُ ٱلشِّمَالِ"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "فِی سَمُومࣲ وَحَمِیمࣲ"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "وَظِلࣲّ مِّن یَحۡمُومࣲ"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "لَّا بَارِدࣲ وَلَا كَرِیمٍ"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "إِنَّهُمۡ كَانُوا۟ قَبۡلَ ذَ ٰ⁠لِكَ مُتۡرَفِینَ"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "وَكَانُوا۟ یُصِرُّونَ عَلَى ٱلۡحِنثِ ٱلۡعَظِیمِ"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "وَكَانُوا۟ یَقُولُونَ أَىِٕذَا مِتۡنَا وَكُنَّا تُرَابࣰا وَعِظَـٰمًا أَءِنَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "أَوَءَابَاۤؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "قُلۡ إِنَّ ٱلۡأَوَّلِینَ وَٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "لَمَجۡمُوعُونَ إِلَىٰ مِیقَـٰتِ یَوۡمࣲ مَّعۡلُومࣲ"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "ثُمَّ إِنَّكُمۡ أَیُّهَا ٱلضَّاۤلُّونَ ٱلۡمُكَذِّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "لَـَٔاكِلُونَ مِن شَجَرࣲ مِّن زَقُّومࣲ"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "فَمَالِـُٔونَ مِنۡهَا ٱلۡبُطُونَ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "فَشَـٰرِبُونَ عَلَیۡهِ مِنَ ٱلۡحَمِیمِ"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "فَشَـٰرِبُونَ شُرۡبَ ٱلۡهِیمِ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "هَـٰذَا نُزُلُهُمۡ یَوۡمَ ٱلدِّینِ"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "نَحۡنُ خَلَقۡنَـٰكُمۡ فَلَوۡلَا تُصَدِّقُونَ"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "أَفَرَءَیۡتُم مَّا تُمۡنُونَ"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "ءَأَنتُمۡ تَخۡلُقُونَهُۥۤ أَمۡ نَحۡنُ ٱلۡخَـٰلِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "نَحۡنُ قَدَّرۡنَا بَیۡنَكُمُ ٱلۡمَوۡتَ وَمَا نَحۡنُ بِمَسۡبُوقِینَ"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "عَلَىٰۤ أَن نُّبَدِّلَ أَمۡثَـٰلَكُمۡ وَنُنشِئَكُمۡ فِی مَا لَا تَعۡلَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "وَلَقَدۡ عَلِمۡتُمُ ٱلنَّشۡأَةَ ٱلۡأُولَىٰ فَلَوۡلَا تَذَكَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "أَفَرَءَیۡتُم مَّا تَحۡرُثُونَ"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "ءَأَنتُمۡ تَزۡرَعُونَهُۥۤ أَمۡ نَحۡنُ ٱلزَّ ٰ⁠رِعُونَ"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "لَوۡ نَشَاۤءُ لَجَعَلۡنَـٰهُ حُطَـٰمࣰا فَظَلۡتُمۡ تَفَكَّهُونَ"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "إِنَّا لَمُغۡرَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بَلۡ نَحۡنُ مَحۡرُومُونَ"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "أَفَرَءَیۡتُمُ ٱلۡمَاۤءَ ٱلَّذِی تَشۡرَبُونَ"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "ءَأَنتُمۡ أَنزَلۡتُمُوهُ مِنَ ٱلۡمُزۡنِ أَمۡ نَحۡنُ ٱلۡمُنزِلُونَ"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "لَوۡ نَشَاۤءُ جَعَلۡنَـٰهُ أُجَاجࣰا فَلَوۡلَا تَشۡكُرُونَ"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "أَفَرَءَیۡتُمُ ٱلنَّارَ ٱلَّتِی تُورُونَ"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "ءَأَنتُمۡ أَنشَأۡتُمۡ شَجَرَتَهَاۤ أَمۡ نَحۡنُ ٱلۡمُنشِـُٔونَ"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "نَحۡنُ جَعَلۡنَـٰهَا تَذۡكِرَةࣰ وَمَتَـٰعࣰا لِّلۡمُقۡوِینَ"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "فَسَبِّحۡ بِٱسۡمِ رَبِّكَ ٱلۡعَظِیمِ"
        }
    ]
}