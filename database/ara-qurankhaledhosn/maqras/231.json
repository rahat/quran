{
    "hizbs": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ لَاۤ أُقۡسِمُ بِیَوۡمِ ٱلۡقِیَـٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "وَلَاۤ أُقۡسِمُ بِٱلنَّفۡسِ ٱللَّوَّامَةِ"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "أَیَحۡسَبُ ٱلۡإِنسَـٰنُ أَلَّن نَّجۡمَعَ عِظَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بَلَىٰ قَـٰدِرِینَ عَلَىٰۤ أَن نُّسَوِّیَ بَنَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بَلۡ یُرِیدُ ٱلۡإِنسَـٰنُ لِیَفۡجُرَ أَمَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "یَسۡـَٔلُ أَیَّانَ یَوۡمُ ٱلۡقِیَـٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "فَإِذَا بَرِقَ ٱلۡبَصَرُ"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "وَخَسَفَ ٱلۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "وَجُمِعَ ٱلشَّمۡسُ وَٱلۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "یَقُولُ ٱلۡإِنسَـٰنُ یَوۡمَىِٕذٍ أَیۡنَ ٱلۡمَفَرُّ"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "كَلَّا لَا وَزَرَ"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "إِلَىٰ رَبِّكَ یَوۡمَىِٕذٍ ٱلۡمُسۡتَقَرُّ"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "یُنَبَّؤُا۟ ٱلۡإِنسَـٰنُ یَوۡمَىِٕذِۭ بِمَا قَدَّمَ وَأَخَّرَ"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بَلِ ٱلۡإِنسَـٰنُ عَلَىٰ نَفۡسِهِۦ بَصِیرَةࣱ"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "وَلَوۡ أَلۡقَىٰ مَعَاذِیرَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "لَا تُحَرِّكۡ بِهِۦ لِسَانَكَ لِتَعۡجَلَ بِهِۦۤ"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "إِنَّ عَلَیۡنَا جَمۡعَهُۥ وَقُرۡءَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "فَإِذَا قَرَأۡنَـٰهُ فَٱتَّبِعۡ قُرۡءَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "ثُمَّ إِنَّ عَلَیۡنَا بَیَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "كَلَّا بَلۡ تُحِبُّونَ ٱلۡعَاجِلَةَ"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "وَتَذَرُونَ ٱلۡـَٔاخِرَةَ"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "وُجُوهࣱ یَوۡمَىِٕذࣲ نَّاضِرَةٌ"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "إِلَىٰ رَبِّهَا نَاظِرَةࣱ"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "وَوُجُوهࣱ یَوۡمَىِٕذِۭ بَاسِرَةࣱ"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "تَظُنُّ أَن یُفۡعَلَ بِهَا فَاقِرَةࣱ"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "كَلَّاۤ إِذَا بَلَغَتِ ٱلتَّرَاقِیَ"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "وَقِیلَ مَنۡۜ رَاقࣲ"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "وَظَنَّ أَنَّهُ ٱلۡفِرَاقُ"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "وَٱلۡتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "إِلَىٰ رَبِّكَ یَوۡمَىِٕذٍ ٱلۡمَسَاقُ"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "فَلَا صَدَّقَ وَلَا صَلَّىٰ"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "وَلَـٰكِن كَذَّبَ وَتَوَلَّىٰ"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "ثُمَّ ذَهَبَ إِلَىٰۤ أَهۡلِهِۦ یَتَمَطَّىٰۤ"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "أَوۡلَىٰ لَكَ فَأَوۡلَىٰ"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "ثُمَّ أَوۡلَىٰ لَكَ فَأَوۡلَىٰۤ"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "أَیَحۡسَبُ ٱلۡإِنسَـٰنُ أَن یُتۡرَكَ سُدًى"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "أَلَمۡ یَكُ نُطۡفَةࣰ مِّن مَّنِیࣲّ یُمۡنَىٰ"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "ثُمَّ كَانَ عَلَقَةࣰ فَخَلَقَ فَسَوَّىٰ"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "فَجَعَلَ مِنۡهُ ٱلزَّوۡجَیۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰۤ"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "أَلَیۡسَ ذَ ٰ⁠لِكَ بِقَـٰدِرٍ عَلَىٰۤ أَن یُحۡـِۧیَ ٱلۡمَوۡتَىٰ"
        },
        {
            "chapter": 76,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ هَلۡ أَتَىٰ عَلَى ٱلۡإِنسَـٰنِ حِینࣱ مِّنَ ٱلدَّهۡرِ لَمۡ یَكُن شَیۡـࣰٔا مَّذۡكُورًا"
        },
        {
            "chapter": 76,
            "verse": 2,
            "text": "إِنَّا خَلَقۡنَا ٱلۡإِنسَـٰنَ مِن نُّطۡفَةٍ أَمۡشَاجࣲ نَّبۡتَلِیهِ فَجَعَلۡنَـٰهُ سَمِیعَۢا بَصِیرًا"
        },
        {
            "chapter": 76,
            "verse": 3,
            "text": "إِنَّا هَدَیۡنَـٰهُ ٱلسَّبِیلَ إِمَّا شَاكِرࣰا وَإِمَّا كَفُورًا"
        },
        {
            "chapter": 76,
            "verse": 4,
            "text": "إِنَّاۤ أَعۡتَدۡنَا لِلۡكَـٰفِرِینَ سَلَـٰسِلَا۟ وَأَغۡلَـٰلࣰا وَسَعِیرًا"
        },
        {
            "chapter": 76,
            "verse": 5,
            "text": "إِنَّ ٱلۡأَبۡرَارَ یَشۡرَبُونَ مِن كَأۡسࣲ كَانَ مِزَاجُهَا كَافُورًا"
        },
        {
            "chapter": 76,
            "verse": 6,
            "text": "عَیۡنࣰا یَشۡرَبُ بِهَا عِبَادُ ٱللَّهِ یُفَجِّرُونَهَا تَفۡجِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 7,
            "text": "یُوفُونَ بِٱلنَّذۡرِ وَیَخَافُونَ یَوۡمࣰا كَانَ شَرُّهُۥ مُسۡتَطِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 8,
            "text": "وَیُطۡعِمُونَ ٱلطَّعَامَ عَلَىٰ حُبِّهِۦ مِسۡكِینࣰا وَیَتِیمࣰا وَأَسِیرًا"
        },
        {
            "chapter": 76,
            "verse": 9,
            "text": "إِنَّمَا نُطۡعِمُكُمۡ لِوَجۡهِ ٱللَّهِ لَا نُرِیدُ مِنكُمۡ جَزَاۤءࣰ وَلَا شُكُورًا"
        },
        {
            "chapter": 76,
            "verse": 10,
            "text": "إِنَّا نَخَافُ مِن رَّبِّنَا یَوۡمًا عَبُوسࣰا قَمۡطَرِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 11,
            "text": "فَوَقَىٰهُمُ ٱللَّهُ شَرَّ ذَ ٰ⁠لِكَ ٱلۡیَوۡمِ وَلَقَّىٰهُمۡ نَضۡرَةࣰ وَسُرُورࣰا"
        },
        {
            "chapter": 76,
            "verse": 12,
            "text": "وَجَزَىٰهُم بِمَا صَبَرُوا۟ جَنَّةࣰ وَحَرِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 13,
            "text": "مُّتَّكِـِٔینَ فِیهَا عَلَى ٱلۡأَرَاۤىِٕكِۖ لَا یَرَوۡنَ فِیهَا شَمۡسࣰا وَلَا زَمۡهَرِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 14,
            "text": "وَدَانِیَةً عَلَیۡهِمۡ ظِلَـٰلُهَا وَذُلِّلَتۡ قُطُوفُهَا تَذۡلِیلࣰا"
        },
        {
            "chapter": 76,
            "verse": 15,
            "text": "وَیُطَافُ عَلَیۡهِم بِـَٔانِیَةࣲ مِّن فِضَّةࣲ وَأَكۡوَابࣲ كَانَتۡ قَوَارِیرَا۠"
        },
        {
            "chapter": 76,
            "verse": 16,
            "text": "قَوَارِیرَا۟ مِن فِضَّةࣲ قَدَّرُوهَا تَقۡدِیرࣰا"
        },
        {
            "chapter": 76,
            "verse": 17,
            "text": "وَیُسۡقَوۡنَ فِیهَا كَأۡسࣰا كَانَ مِزَاجُهَا زَنجَبِیلًا"
        },
        {
            "chapter": 76,
            "verse": 18,
            "text": "عَیۡنࣰا فِیهَا تُسَمَّىٰ سَلۡسَبِیلࣰا"
        }
    ]
}