{
    "hizbs": [
        {
            "chapter": 76,
            "verse": 19,
            "text": "۞ وَیَطُوفُ عَلَیۡهِمۡ وِلۡدَ ٰ⁠نࣱ مُّخَلَّدُونَ إِذَا رَأَیۡتَهُمۡ حَسِبۡتَهُمۡ لُؤۡلُؤࣰا مَّنثُورࣰا"
        },
        {
            "chapter": 76,
            "verse": 20,
            "text": "وَإِذَا رَأَیۡتَ ثَمَّ رَأَیۡتَ نَعِیمࣰا وَمُلۡكࣰا كَبِیرًا"
        },
        {
            "chapter": 76,
            "verse": 21,
            "text": "عَـٰلِیَهُمۡ ثِیَابُ سُندُسٍ خُضۡرࣱ وَإِسۡتَبۡرَقࣱۖ وَحُلُّوۤا۟ أَسَاوِرَ مِن فِضَّةࣲ وَسَقَىٰهُمۡ رَبُّهُمۡ شَرَابࣰا طَهُورًا"
        },
        {
            "chapter": 76,
            "verse": 22,
            "text": "إِنَّ هَـٰذَا كَانَ لَكُمۡ جَزَاۤءࣰ وَكَانَ سَعۡیُكُم مَّشۡكُورًا"
        },
        {
            "chapter": 76,
            "verse": 23,
            "text": "إِنَّا نَحۡنُ نَزَّلۡنَا عَلَیۡكَ ٱلۡقُرۡءَانَ تَنزِیلࣰا"
        },
        {
            "chapter": 76,
            "verse": 24,
            "text": "فَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ وَلَا تُطِعۡ مِنۡهُمۡ ءَاثِمًا أَوۡ كَفُورࣰا"
        },
        {
            "chapter": 76,
            "verse": 25,
            "text": "وَٱذۡكُرِ ٱسۡمَ رَبِّكَ بُكۡرَةࣰ وَأَصِیلࣰا"
        },
        {
            "chapter": 76,
            "verse": 26,
            "text": "وَمِنَ ٱلَّیۡلِ فَٱسۡجُدۡ لَهُۥ وَسَبِّحۡهُ لَیۡلࣰا طَوِیلًا"
        },
        {
            "chapter": 76,
            "verse": 27,
            "text": "إِنَّ هَـٰۤؤُلَاۤءِ یُحِبُّونَ ٱلۡعَاجِلَةَ وَیَذَرُونَ وَرَاۤءَهُمۡ یَوۡمࣰا ثَقِیلࣰا"
        },
        {
            "chapter": 76,
            "verse": 28,
            "text": "نَّحۡنُ خَلَقۡنَـٰهُمۡ وَشَدَدۡنَاۤ أَسۡرَهُمۡۖ وَإِذَا شِئۡنَا بَدَّلۡنَاۤ أَمۡثَـٰلَهُمۡ تَبۡدِیلًا"
        },
        {
            "chapter": 76,
            "verse": 29,
            "text": "إِنَّ هَـٰذِهِۦ تَذۡكِرَةࣱۖ فَمَن شَاۤءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ سَبِیلࣰا"
        },
        {
            "chapter": 76,
            "verse": 30,
            "text": "وَمَا تَشَاۤءُونَ إِلَّاۤ أَن یَشَاۤءَ ٱللَّهُۚ إِنَّ ٱللَّهَ كَانَ عَلِیمًا حَكِیمࣰا"
        },
        {
            "chapter": 76,
            "verse": 31,
            "text": "یُدۡخِلُ مَن یَشَاۤءُ فِی رَحۡمَتِهِۦۚ وَٱلظَّـٰلِمِینَ أَعَدَّ لَهُمۡ عَذَابًا أَلِیمَۢا"
        },
        {
            "chapter": 77,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلۡمُرۡسَلَـٰتِ عُرۡفࣰا"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "فَٱلۡعَـٰصِفَـٰتِ عَصۡفࣰا"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "وَٱلنَّـٰشِرَ ٰ⁠تِ نَشۡرࣰا"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "فَٱلۡفَـٰرِقَـٰتِ فَرۡقࣰا"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "فَٱلۡمُلۡقِیَـٰتِ ذِكۡرًا"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "عُذۡرًا أَوۡ نُذۡرًا"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "إِنَّمَا تُوعَدُونَ لَوَ ٰ⁠قِعࣱ"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "فَإِذَا ٱلنُّجُومُ طُمِسَتۡ"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "وَإِذَا ٱلسَّمَاۤءُ فُرِجَتۡ"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "وَإِذَا ٱلۡجِبَالُ نُسِفَتۡ"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "وَإِذَا ٱلرُّسُلُ أُقِّتَتۡ"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "لِأَیِّ یَوۡمٍ أُجِّلَتۡ"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "لِیَوۡمِ ٱلۡفَصۡلِ"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلۡفَصۡلِ"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "أَلَمۡ نُهۡلِكِ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "ثُمَّ نُتۡبِعُهُمُ ٱلۡـَٔاخِرِینَ"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "كَذَ ٰ⁠لِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِینَ"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "أَلَمۡ نَخۡلُقكُّم مِّن مَّاۤءࣲ مَّهِینࣲ"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "فَجَعَلۡنَـٰهُ فِی قَرَارࣲ مَّكِینٍ"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "إِلَىٰ قَدَرࣲ مَّعۡلُومࣲ"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "فَقَدَرۡنَا فَنِعۡمَ ٱلۡقَـٰدِرُونَ"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ كِفَاتًا"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "أَحۡیَاۤءࣰ وَأَمۡوَ ٰ⁠تࣰا"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "وَجَعَلۡنَا فِیهَا رَوَ ٰ⁠سِیَ شَـٰمِخَـٰتࣲ وَأَسۡقَیۡنَـٰكُم مَّاۤءࣰ فُرَاتࣰا"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "ٱنطَلِقُوۤا۟ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "ٱنطَلِقُوۤا۟ إِلَىٰ ظِلࣲّ ذِی ثَلَـٰثِ شُعَبࣲ"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "لَّا ظَلِیلࣲ وَلَا یُغۡنِی مِنَ ٱللَّهَبِ"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "إِنَّهَا تَرۡمِی بِشَرَرࣲ كَٱلۡقَصۡرِ"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "كَأَنَّهُۥ جِمَـٰلَتࣱ صُفۡرࣱ"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "هَـٰذَا یَوۡمُ لَا یَنطِقُونَ"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "وَلَا یُؤۡذَنُ لَهُمۡ فَیَعۡتَذِرُونَ"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "هَـٰذَا یَوۡمُ ٱلۡفَصۡلِۖ جَمَعۡنَـٰكُمۡ وَٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "فَإِن كَانَ لَكُمۡ كَیۡدࣱ فَكِیدُونِ"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "إِنَّ ٱلۡمُتَّقِینَ فِی ظِلَـٰلࣲ وَعُیُونࣲ"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "وَفَوَ ٰ⁠كِهَ مِمَّا یَشۡتَهُونَ"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "كُلُوا۟ وَٱشۡرَبُوا۟ هَنِیۤـَٔۢا بِمَا كُنتُمۡ تَعۡمَلُونَ"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "إِنَّا كَذَ ٰ⁠لِكَ نَجۡزِی ٱلۡمُحۡسِنِینَ"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "كُلُوا۟ وَتَمَتَّعُوا۟ قَلِیلًا إِنَّكُم مُّجۡرِمُونَ"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "وَإِذَا قِیلَ لَهُمُ ٱرۡكَعُوا۟ لَا یَرۡكَعُونَ"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "فَبِأَیِّ حَدِیثِۭ بَعۡدَهُۥ یُؤۡمِنُونَ"
        }
    ]
}