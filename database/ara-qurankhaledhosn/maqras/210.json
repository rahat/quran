{
    "hizbs": [
        {
            "chapter": 52,
            "verse": 24,
            "text": "۞ وَیَطُوفُ عَلَیۡهِمۡ غِلۡمَانࣱ لَّهُمۡ كَأَنَّهُمۡ لُؤۡلُؤࣱ مَّكۡنُونࣱ"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضࣲ یَتَسَاۤءَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُوۤا۟ إِنَّا كُنَّا قَبۡلُ فِیۤ أَهۡلِنَا مُشۡفِقِینَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ ٱللَّهُ عَلَیۡنَا وَوَقَىٰنَا عَذَابَ ٱلسَّمُومِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "إِنَّا كُنَّا مِن قَبۡلُ نَدۡعُوهُۖ إِنَّهُۥ هُوَ ٱلۡبَرُّ ٱلرَّحِیمُ"
        },
        {
            "chapter": 52,
            "verse": 29,
            "text": "فَذَكِّرۡ فَمَاۤ أَنتَ بِنِعۡمَتِ رَبِّكَ بِكَاهِنࣲ وَلَا مَجۡنُونٍ"
        },
        {
            "chapter": 52,
            "verse": 30,
            "text": "أَمۡ یَقُولُونَ شَاعِرࣱ نَّتَرَبَّصُ بِهِۦ رَیۡبَ ٱلۡمَنُونِ"
        },
        {
            "chapter": 52,
            "verse": 31,
            "text": "قُلۡ تَرَبَّصُوا۟ فَإِنِّی مَعَكُم مِّنَ ٱلۡمُتَرَبِّصِینَ"
        },
        {
            "chapter": 52,
            "verse": 32,
            "text": "أَمۡ تَأۡمُرُهُمۡ أَحۡلَـٰمُهُم بِهَـٰذَاۤۚ أَمۡ هُمۡ قَوۡمࣱ طَاغُونَ"
        },
        {
            "chapter": 52,
            "verse": 33,
            "text": "أَمۡ یَقُولُونَ تَقَوَّلَهُۥۚ بَل لَّا یُؤۡمِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 34,
            "text": "فَلۡیَأۡتُوا۟ بِحَدِیثࣲ مِّثۡلِهِۦۤ إِن كَانُوا۟ صَـٰدِقِینَ"
        },
        {
            "chapter": 52,
            "verse": 35,
            "text": "أَمۡ خُلِقُوا۟ مِنۡ غَیۡرِ شَیۡءٍ أَمۡ هُمُ ٱلۡخَـٰلِقُونَ"
        },
        {
            "chapter": 52,
            "verse": 36,
            "text": "أَمۡ خَلَقُوا۟ ٱلسَّمَـٰوَ ٰ⁠تِ وَٱلۡأَرۡضَۚ بَل لَّا یُوقِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 37,
            "text": "أَمۡ عِندَهُمۡ خَزَاۤىِٕنُ رَبِّكَ أَمۡ هُمُ ٱلۡمُصَۣیۡطِرُونَ"
        },
        {
            "chapter": 52,
            "verse": 38,
            "text": "أَمۡ لَهُمۡ سُلَّمࣱ یَسۡتَمِعُونَ فِیهِۖ فَلۡیَأۡتِ مُسۡتَمِعُهُم بِسُلۡطَـٰنࣲ مُّبِینٍ"
        },
        {
            "chapter": 52,
            "verse": 39,
            "text": "أَمۡ لَهُ ٱلۡبَنَـٰتُ وَلَكُمُ ٱلۡبَنُونَ"
        },
        {
            "chapter": 52,
            "verse": 40,
            "text": "أَمۡ تَسۡـَٔلُهُمۡ أَجۡرࣰا فَهُم مِّن مَّغۡرَمࣲ مُّثۡقَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 41,
            "text": "أَمۡ عِندَهُمُ ٱلۡغَیۡبُ فَهُمۡ یَكۡتُبُونَ"
        },
        {
            "chapter": 52,
            "verse": 42,
            "text": "أَمۡ یُرِیدُونَ كَیۡدࣰاۖ فَٱلَّذِینَ كَفَرُوا۟ هُمُ ٱلۡمَكِیدُونَ"
        },
        {
            "chapter": 52,
            "verse": 43,
            "text": "أَمۡ لَهُمۡ إِلَـٰهٌ غَیۡرُ ٱللَّهِۚ سُبۡحَـٰنَ ٱللَّهِ عَمَّا یُشۡرِكُونَ"
        },
        {
            "chapter": 52,
            "verse": 44,
            "text": "وَإِن یَرَوۡا۟ كِسۡفࣰا مِّنَ ٱلسَّمَاۤءِ سَاقِطࣰا یَقُولُوا۟ سَحَابࣱ مَّرۡكُومࣱ"
        },
        {
            "chapter": 52,
            "verse": 45,
            "text": "فَذَرۡهُمۡ حَتَّىٰ یُلَـٰقُوا۟ یَوۡمَهُمُ ٱلَّذِی فِیهِ یُصۡعَقُونَ"
        },
        {
            "chapter": 52,
            "verse": 46,
            "text": "یَوۡمَ لَا یُغۡنِی عَنۡهُمۡ كَیۡدُهُمۡ شَیۡـࣰٔا وَلَا هُمۡ یُنصَرُونَ"
        },
        {
            "chapter": 52,
            "verse": 47,
            "text": "وَإِنَّ لِلَّذِینَ ظَلَمُوا۟ عَذَابࣰا دُونَ ذَ ٰ⁠لِكَ وَلَـٰكِنَّ أَكۡثَرَهُمۡ لَا یَعۡلَمُونَ"
        },
        {
            "chapter": 52,
            "verse": 48,
            "text": "وَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ فَإِنَّكَ بِأَعۡیُنِنَاۖ وَسَبِّحۡ بِحَمۡدِ رَبِّكَ حِینَ تَقُومُ"
        },
        {
            "chapter": 52,
            "verse": 49,
            "text": "وَمِنَ ٱلَّیۡلِ فَسَبِّحۡهُ وَإِدۡبَـٰرَ ٱلنُّجُومِ"
        },
        {
            "chapter": 53,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلنَّجۡمِ إِذَا هَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَاحِبُكُمۡ وَمَا غَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا یَنطِقُ عَنِ ٱلۡهَوَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "إِنۡ هُوَ إِلَّا وَحۡیࣱ یُوحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهُۥ شَدِیدُ ٱلۡقُوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُو مِرَّةࣲ فَٱسۡتَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهُوَ بِٱلۡأُفُقِ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوۡسَیۡنِ أَوۡ أَدۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَأَوۡحَىٰۤ إِلَىٰ عَبۡدِهِۦ مَاۤ أَوۡحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ ٱلۡفُؤَادُ مَا رَأَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "أَفَتُمَـٰرُونَهُۥ عَلَىٰ مَا یَرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدۡ رَءَاهُ نَزۡلَةً أُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِندَ سِدۡرَةِ ٱلۡمُنتَهَىٰ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِندَهَا جَنَّةُ ٱلۡمَأۡوَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "إِذۡ یَغۡشَى ٱلسِّدۡرَةَ مَا یَغۡشَىٰ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ ٱلۡبَصَرُ وَمَا طَغَىٰ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدۡ رَأَىٰ مِنۡ ءَایَـٰتِ رَبِّهِ ٱلۡكُبۡرَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "أَفَرَءَیۡتُمُ ٱللَّـٰتَ وَٱلۡعُزَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنَوٰةَ ٱلثَّالِثَةَ ٱلۡأُخۡرَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "أَلَكُمُ ٱلذَّكَرُ وَلَهُ ٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلۡكَ إِذࣰا قِسۡمَةࣱ ضِیزَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "إِنۡ هِیَ إِلَّاۤ أَسۡمَاۤءࣱ سَمَّیۡتُمُوهَاۤ أَنتُمۡ وَءَابَاۤؤُكُم مَّاۤ أَنزَلَ ٱللَّهُ بِهَا مِن سُلۡطَـٰنٍۚ إِن یَتَّبِعُونَ إِلَّا ٱلظَّنَّ وَمَا تَهۡوَى ٱلۡأَنفُسُۖ وَلَقَدۡ جَاۤءَهُم مِّن رَّبِّهِمُ ٱلۡهُدَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "أَمۡ لِلۡإِنسَـٰنِ مَا تَمَنَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلَّهِ ٱلۡـَٔاخِرَةُ وَٱلۡأُولَىٰ"
        }
    ]
}