{
    "hizbs": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "ٱلَّذِیۤ أَنقَضَ ظَهۡرَكَ"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "فَإِنَّ مَعَ ٱلۡعُسۡرِ یُسۡرًا"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "إِنَّ مَعَ ٱلۡعُسۡرِ یُسۡرࣰا"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "بِّسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلتِّینِ وَٱلزَّیۡتُونِ"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "وَطُورِ سِینِینَ"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "وَهَـٰذَا ٱلۡبَلَدِ ٱلۡأَمِینِ"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "لَقَدۡ خَلَقۡنَا ٱلۡإِنسَـٰنَ فِیۤ أَحۡسَنِ تَقۡوِیمࣲ"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "ثُمَّ رَدَدۡنَـٰهُ أَسۡفَلَ سَـٰفِلِینَ"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "إِلَّا ٱلَّذِینَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ فَلَهُمۡ أَجۡرٌ غَیۡرُ مَمۡنُونࣲ"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "فَمَا یُكَذِّبُكَ بَعۡدُ بِٱلدِّینِ"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "أَلَیۡسَ ٱللَّهُ بِأَحۡكَمِ ٱلۡحَـٰكِمِینَ"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ ٱقۡرَأۡ بِٱسۡمِ رَبِّكَ ٱلَّذِی خَلَقَ"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "خَلَقَ ٱلۡإِنسَـٰنَ مِنۡ عَلَقٍ"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "ٱقۡرَأۡ وَرَبُّكَ ٱلۡأَكۡرَمُ"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "ٱلَّذِی عَلَّمَ بِٱلۡقَلَمِ"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "عَلَّمَ ٱلۡإِنسَـٰنَ مَا لَمۡ یَعۡلَمۡ"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "كَلَّاۤ إِنَّ ٱلۡإِنسَـٰنَ لَیَطۡغَىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "أَن رَّءَاهُ ٱسۡتَغۡنَىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجۡعَىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "أَرَءَیۡتَ ٱلَّذِی یَنۡهَىٰ"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "عَبۡدًا إِذَا صَلَّىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "أَرَءَیۡتَ إِن كَانَ عَلَى ٱلۡهُدَىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "أَوۡ أَمَرَ بِٱلتَّقۡوَىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "أَرَءَیۡتَ إِن كَذَّبَ وَتَوَلَّىٰۤ"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "أَلَمۡ یَعۡلَم بِأَنَّ ٱللَّهَ یَرَىٰ"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "كَلَّا لَىِٕن لَّمۡ یَنتَهِ لَنَسۡفَعَۢا بِٱلنَّاصِیَةِ"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "نَاصِیَةࣲ كَـٰذِبَةٍ خَاطِئَةࣲ"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "فَلۡیَدۡعُ نَادِیَهُۥ"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "سَنَدۡعُ ٱلزَّبَانِیَةَ"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "كَلَّا لَا تُطِعۡهُ وَٱسۡجُدۡ وَٱقۡتَرِب ۩"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "بِّسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ إِنَّاۤ أَنزَلۡنَـٰهُ فِی لَیۡلَةِ ٱلۡقَدۡرِ"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا لَیۡلَةُ ٱلۡقَدۡرِ"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "لَیۡلَةُ ٱلۡقَدۡرِ خَیۡرࣱ مِّنۡ أَلۡفِ شَهۡرࣲ"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "تَنَزَّلُ ٱلۡمَلَـٰۤىِٕكَةُ وَٱلرُّوحُ فِیهَا بِإِذۡنِ رَبِّهِم مِّن كُلِّ أَمۡرࣲ"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "سَلَـٰمٌ هِیَ حَتَّىٰ مَطۡلَعِ ٱلۡفَجۡرِ"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ لَمۡ یَكُنِ ٱلَّذِینَ كَفَرُوا۟ مِنۡ أَهۡلِ ٱلۡكِتَـٰبِ وَٱلۡمُشۡرِكِینَ مُنفَكِّینَ حَتَّىٰ تَأۡتِیَهُمُ ٱلۡبَیِّنَةُ"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "رَسُولࣱ مِّنَ ٱللَّهِ یَتۡلُوا۟ صُحُفࣰا مُّطَهَّرَةࣰ"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "فِیهَا كُتُبࣱ قَیِّمَةࣱ"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "وَمَا تَفَرَّقَ ٱلَّذِینَ أُوتُوا۟ ٱلۡكِتَـٰبَ إِلَّا مِنۢ بَعۡدِ مَا جَاۤءَتۡهُمُ ٱلۡبَیِّنَةُ"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "وَمَاۤ أُمِرُوۤا۟ إِلَّا لِیَعۡبُدُوا۟ ٱللَّهَ مُخۡلِصِینَ لَهُ ٱلدِّینَ حُنَفَاۤءَ وَیُقِیمُوا۟ ٱلصَّلَوٰةَ وَیُؤۡتُوا۟ ٱلزَّكَوٰةَۚ وَذَ ٰ⁠لِكَ دِینُ ٱلۡقَیِّمَةِ"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "إِنَّ ٱلَّذِینَ كَفَرُوا۟ مِنۡ أَهۡلِ ٱلۡكِتَـٰبِ وَٱلۡمُشۡرِكِینَ فِی نَارِ جَهَنَّمَ خَـٰلِدِینَ فِیهَاۤۚ أُو۟لَـٰۤىِٕكَ هُمۡ شَرُّ ٱلۡبَرِیَّةِ"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "إِنَّ ٱلَّذِینَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ أُو۟لَـٰۤىِٕكَ هُمۡ خَیۡرُ ٱلۡبَرِیَّةِ"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "جَزَاۤؤُهُمۡ عِندَ رَبِّهِمۡ جَنَّـٰتُ عَدۡنࣲ تَجۡرِی مِن تَحۡتِهَا ٱلۡأَنۡهَـٰرُ خَـٰلِدِینَ فِیهَاۤ أَبَدࣰاۖ رَّضِیَ ٱللَّهُ عَنۡهُمۡ وَرَضُوا۟ عَنۡهُۚ ذَ ٰ⁠لِكَ لِمَنۡ خَشِیَ رَبَّهُۥ"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ إِذَا زُلۡزِلَتِ ٱلۡأَرۡضُ زِلۡزَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "وَأَخۡرَجَتِ ٱلۡأَرۡضُ أَثۡقَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "وَقَالَ ٱلۡإِنسَـٰنُ مَا لَهَا"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "یَوۡمَىِٕذࣲ تُحَدِّثُ أَخۡبَارَهَا"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "بِأَنَّ رَبَّكَ أَوۡحَىٰ لَهَا"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "یَوۡمَىِٕذࣲ یَصۡدُرُ ٱلنَّاسُ أَشۡتَاتࣰا لِّیُرَوۡا۟ أَعۡمَـٰلَهُمۡ"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "فَمَن یَعۡمَلۡ مِثۡقَالَ ذَرَّةٍ خَیۡرࣰا یَرَهُۥ"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "وَمَن یَعۡمَلۡ مِثۡقَالَ ذَرَّةࣲ شَرࣰّا یَرَهُۥ"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلۡعَـٰدِیَـٰتِ ضَبۡحࣰا"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "فَٱلۡمُورِیَـٰتِ قَدۡحࣰا"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "فَٱلۡمُغِیرَ ٰ⁠تِ صُبۡحࣰا"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "فَأَثَرۡنَ بِهِۦ نَقۡعࣰا"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "فَوَسَطۡنَ بِهِۦ جَمۡعًا"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "إِنَّ ٱلۡإِنسَـٰنَ لِرَبِّهِۦ لَكَنُودࣱ"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "وَإِنَّهُۥ عَلَىٰ ذَ ٰ⁠لِكَ لَشَهِیدࣱ"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "وَإِنَّهُۥ لِحُبِّ ٱلۡخَیۡرِ لَشَدِیدٌ"
        }
    ]
}