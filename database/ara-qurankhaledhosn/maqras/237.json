{
    "hizbs": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ سَبِّحِ ٱسۡمَ رَبِّكَ ٱلۡأَعۡلَى"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "ٱلَّذِی خَلَقَ فَسَوَّىٰ"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "وَٱلَّذِی قَدَّرَ فَهَدَىٰ"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "وَٱلَّذِیۤ أَخۡرَجَ ٱلۡمَرۡعَىٰ"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "فَجَعَلَهُۥ غُثَاۤءً أَحۡوَىٰ"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "سَنُقۡرِئُكَ فَلَا تَنسَىٰۤ"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "إِلَّا مَا شَاۤءَ ٱللَّهُۚ إِنَّهُۥ یَعۡلَمُ ٱلۡجَهۡرَ وَمَا یَخۡفَىٰ"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "وَنُیَسِّرُكَ لِلۡیُسۡرَىٰ"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "فَذَكِّرۡ إِن نَّفَعَتِ ٱلذِّكۡرَىٰ"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "سَیَذَّكَّرُ مَن یَخۡشَىٰ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "وَیَتَجَنَّبُهَا ٱلۡأَشۡقَى"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "ٱلَّذِی یَصۡلَى ٱلنَّارَ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ثُمَّ لَا یَمُوتُ فِیهَا وَلَا یَحۡیَىٰ"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "قَدۡ أَفۡلَحَ مَن تَزَكَّىٰ"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "وَذَكَرَ ٱسۡمَ رَبِّهِۦ فَصَلَّىٰ"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بَلۡ تُؤۡثِرُونَ ٱلۡحَیَوٰةَ ٱلدُّنۡیَا"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "وَٱلۡـَٔاخِرَةُ خَیۡرࣱ وَأَبۡقَىٰۤ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "إِنَّ هَـٰذَا لَفِی ٱلصُّحُفِ ٱلۡأُولَىٰ"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صُحُفِ إِبۡرَ ٰ⁠هِیمَ وَمُوسَىٰ"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ هَلۡ أَتَىٰكَ حَدِیثُ ٱلۡغَـٰشِیَةِ"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "وُجُوهࣱ یَوۡمَىِٕذٍ خَـٰشِعَةٌ"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "عَامِلَةࣱ نَّاصِبَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "تَصۡلَىٰ نَارًا حَامِیَةࣰ"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "تُسۡقَىٰ مِنۡ عَیۡنٍ ءَانِیَةࣲ"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "لَّیۡسَ لَهُمۡ طَعَامٌ إِلَّا مِن ضَرِیعࣲ"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "لَّا یُسۡمِنُ وَلَا یُغۡنِی مِن جُوعࣲ"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "وُجُوهࣱ یَوۡمَىِٕذࣲ نَّاعِمَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "لِّسَعۡیِهَا رَاضِیَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "فِی جَنَّةٍ عَالِیَةࣲ"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "لَّا تَسۡمَعُ فِیهَا لَـٰغِیَةࣰ"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "فِیهَا عَیۡنࣱ جَارِیَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "فِیهَا سُرُرࣱ مَّرۡفُوعَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "وَأَكۡوَابࣱ مَّوۡضُوعَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "وَنَمَارِقُ مَصۡفُوفَةࣱ"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "وَزَرَابِیُّ مَبۡثُوثَةٌ"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "أَفَلَا یَنظُرُونَ إِلَى ٱلۡإِبِلِ كَیۡفَ خُلِقَتۡ"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "وَإِلَى ٱلسَّمَاۤءِ كَیۡفَ رُفِعَتۡ"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "وَإِلَى ٱلۡجِبَالِ كَیۡفَ نُصِبَتۡ"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "وَإِلَى ٱلۡأَرۡضِ كَیۡفَ سُطِحَتۡ"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "فَذَكِّرۡ إِنَّمَاۤ أَنتَ مُذَكِّرࣱ"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "لَّسۡتَ عَلَیۡهِم بِمُصَیۡطِرٍ"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "إِلَّا مَن تَوَلَّىٰ وَكَفَرَ"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "فَیُعَذِّبُهُ ٱللَّهُ ٱلۡعَذَابَ ٱلۡأَكۡبَرَ"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "إِنَّ إِلَیۡنَاۤ إِیَابَهُمۡ"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "ثُمَّ إِنَّ عَلَیۡنَا حِسَابَهُم"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلۡفَجۡرِ"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "وَلَیَالٍ عَشۡرࣲ"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "وَٱلشَّفۡعِ وَٱلۡوَتۡرِ"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "وَٱلَّیۡلِ إِذَا یَسۡرِ"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "هَلۡ فِی ذَ ٰ⁠لِكَ قَسَمࣱ لِّذِی حِجۡرٍ"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "أَلَمۡ تَرَ كَیۡفَ فَعَلَ رَبُّكَ بِعَادٍ"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "إِرَمَ ذَاتِ ٱلۡعِمَادِ"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "ٱلَّتِی لَمۡ یُخۡلَقۡ مِثۡلُهَا فِی ٱلۡبِلَـٰدِ"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "وَثَمُودَ ٱلَّذِینَ جَابُوا۟ ٱلصَّخۡرَ بِٱلۡوَادِ"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "وَفِرۡعَوۡنَ ذِی ٱلۡأَوۡتَادِ"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "ٱلَّذِینَ طَغَوۡا۟ فِی ٱلۡبِلَـٰدِ"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "فَأَكۡثَرُوا۟ فِیهَا ٱلۡفَسَادَ"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "فَصَبَّ عَلَیۡهِمۡ رَبُّكَ سَوۡطَ عَذَابٍ"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "إِنَّ رَبَّكَ لَبِٱلۡمِرۡصَادِ"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "فَأَمَّا ٱلۡإِنسَـٰنُ إِذَا مَا ٱبۡتَلَىٰهُ رَبُّهُۥ فَأَكۡرَمَهُۥ وَنَعَّمَهُۥ فَیَقُولُ رَبِّیۤ أَكۡرَمَنِ"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "وَأَمَّاۤ إِذَا مَا ٱبۡتَلَىٰهُ فَقَدَرَ عَلَیۡهِ رِزۡقَهُۥ فَیَقُولُ رَبِّیۤ أَهَـٰنَنِ"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "كَلَّاۖ بَل لَّا تُكۡرِمُونَ ٱلۡیَتِیمَ"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "وَلَا تَحَـٰۤضُّونَ عَلَىٰ طَعَامِ ٱلۡمِسۡكِینِ"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "وَتَأۡكُلُونَ ٱلتُّرَاثَ أَكۡلࣰا لَّمࣰّا"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "وَتُحِبُّونَ ٱلۡمَالَ حُبࣰّا جَمࣰّا"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "كَلَّاۤۖ إِذَا دُكَّتِ ٱلۡأَرۡضُ دَكࣰّا دَكࣰّا"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "وَجَاۤءَ رَبُّكَ وَٱلۡمَلَكُ صَفࣰّا صَفࣰّا"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "وَجِا۟یۤءَ یَوۡمَىِٕذِۭ بِجَهَنَّمَۚ یَوۡمَىِٕذࣲ یَتَذَكَّرُ ٱلۡإِنسَـٰنُ وَأَنَّىٰ لَهُ ٱلذِّكۡرَىٰ"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "یَقُولُ یَـٰلَیۡتَنِی قَدَّمۡتُ لِحَیَاتِی"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "فَیَوۡمَىِٕذࣲ لَّا یُعَذِّبُ عَذَابَهُۥۤ أَحَدࣱ"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "وَلَا یُوثِقُ وَثَاقَهُۥۤ أَحَدࣱ"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "یَـٰۤأَیَّتُهَا ٱلنَّفۡسُ ٱلۡمُطۡمَىِٕنَّةُ"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "ٱرۡجِعِیۤ إِلَىٰ رَبِّكِ رَاضِیَةࣰ مَّرۡضِیَّةࣰ"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "فَٱدۡخُلِی فِی عِبَـٰدِی"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "وَٱدۡخُلِی جَنَّتِی"
        }
    ]
}