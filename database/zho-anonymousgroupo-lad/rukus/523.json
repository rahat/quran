{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Dāng tàiyáng àn dǎn de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "dāng xīngsù língluò de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dāng shānluán bēngkuì de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "dāng yùn tuó bèi pāoqì de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "dāng yěshòu bèi jíhé de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dāng hǎiyáng péngpài de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "dāng línghún bèi pèihé de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "dāng bèi huómái de nǚhái bèi xúnwèn de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "“Tā wèishéme zuìguo ér zāo shāhài ne?”"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Dāng gōngguò bù bèi zhǎnkāi de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "dàngtiān pí bèi jiē qù de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "dāng huǒ yù bèi ránzhe de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "dāng lèyuán bèi sòng jìn de shíhòu"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "měi gè rén dōu zhīdào tā suǒzuòguò de shàn è"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Wǒ shì yǐ yùnxíng de zhòng xīng ──"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "mòluò de xíngxīng"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "hé shìqù shí de hēiyè"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "zhàoyào shí de zǎochén"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "zhè què shì yīgè zūnguì de shǐzhě de yáncí"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "tā zài bǎozuò de zhǔ nàlǐ, shì yǒu quánlì de, shì yǒu dìwèi de"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "shì zhòngwàngsuǒguī, érqiě zhōngyú zhíshǒu de"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Nǐmen de péng 444\tdì bā'èr zhāng pòliè (yǐn fěi tǎ ěr) yǒu, bùshì yīgè fēng rén"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "tā què yǐ kànjiàn nàgè tiānshǐ zài míngxiǎn de tiānbiān"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "tā duì yōuxuán bùshì lìn jiào de"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Zhè bùshì bèi fàngzhú de èmó de yáncí"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "ránzé, nǐmen jiāng wǎng nǎlǐ qù ne"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Zhè zhǐshì duìyú quán shìjiè de jiàohuì ──"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "duìyú nǐmen zhōng yù xúnguīdǎojǔ zhě de jiàohuì"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "nǐmen bù yù xúnguīdǎojǔ, chúfēi zhēnzhǔ ──quán shìjiè de zhǔ ──yìyù de shíhòu.§"
        }
    ]
}