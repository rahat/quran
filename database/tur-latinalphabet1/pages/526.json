{
    "pages": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Ven necmi izâ hevâ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "Mâ dalle sâhıbukum ve mâ gavâ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "Ve mâ yentıku anil hevâ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "İn huve illâ vahyun yûhâ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Allemehu şedîdul kuvâ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "Zû mirreh(mirretin), festevâ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "Ve huve bil ufukil a’lâ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Summe denâ fe tedellâ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "Fe kâne kâbe kavseyni ev ednâ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "Fe evhâ ilâ abdihî mâ evhâ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "Mâ kezebel fuâdu mâ reâ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "E fe tumâr rûnehu alâ mâ yerâ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Ve lekad reâhu nezleten uhrâ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "İnde sidretil muntehâ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "İndehâ cennetul me’vâ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "İz yagşes sidrete mâ yagşâ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Mâ zâgal basaru ve mâ tegâ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Lekad reâ min âyâti rabbihil kubrâ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "E fe reeytumul lâte vel uzzâ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Ve menâtes sâlisetel uhrâ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "E lekumuz zekeru ve lehul unsâ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "Tilke izen kısmetun dîzâ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "İn hiye illâ esmâun semmeytumûhâ entum ve âbâukum mâ enzelallâhu bihâ min sultân(sultânin), in yettebiûne illez zanne ve mâ tehvel enfus(enfusu), ve lekad câehum min rabbihimul hudâ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Em lil insâni mâ temennâ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Fe lillâhil âhiretu vel ûlâ"
        },
        {
            "chapter": 53,
            "verse": 26,
            "text": "Ve kem min melekin fîs semâvâti lâ tugnî şefâatuhum şey’en illâ min ba’di en ye’zenallâhu limen yeşâu ve yerdâ"
        }
    ]
}