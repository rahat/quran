{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "İzes semâunşakkat"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve ezinet li rabbihâ ve hukkat"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Ve izel ardu muddet"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Ve elkat mâ fîhâ ve tehallet"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve ezinet li rabbihâ ve hukkat"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Yâ eyyuhel insânu inneke kâdihun ilâ rabbike kedhan fe mulâkîh(mulâkîhı)"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Fe emmâ men ûtiye kitâbehu bi yemînih(yemînihî)"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Fe sevfe yuhâsebu hısâben yesîrâ(yesîren)"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve yenkalibu ilâ ehlihî mesrûrâ(mesrûren)"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ve emmâ men ûtiye kitâbehu verâe zahrih(zahrihî)"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Fe sevfe yed’û subûrâ(subûren)"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve yaslâ saîrâ(saîren)"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "İnnehu kâne fî ehlihî mesrûrâ(mesrûren)"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "İnnehu zanne en len yahûr(yahûra)"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Belâ, inne rabbehu kâne bihî basîrâ(basîren)"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Fe lâ uksimu biş şefak(şefakı)"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Vel leyli ve mâ vesak(vesaka)"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Vel kameri izet tesak(tesaka)"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Le terkebunne tabakan an tabakın"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Fe mâ lehum lâ yu’minûn(yu’minûne)"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Ve izâ kurıe aleyhimul kur’ânu lâ yescudûn(yescudûne). (SECDE ÂYETİ)"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Belillezîne keferû yukezzibûn(yukezzibûne)"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Vallâhu a’lemu bimâ yûûn(yûûne)"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Fe beşşirhum bi azâbin elîm(elîmin)"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İllellezîne âmenû ve amilûs sâlihâti lehum ecrun gayru memnûn(memnûnin)"
        }
    ]
}