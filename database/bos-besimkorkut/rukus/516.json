{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Tako mi onih koji se jedan za drugim šalju"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "pa kao vihor hite"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "i onih koji objavljuju"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "pa razdvajaju"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "i Objavu dostavljaju"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "opravdanje ili opomenu –"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "sigurno će biti ono čime vam se prijeti"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Kada zvijezde sjaj izgube"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "i kada se nebo otvori"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "i kada se planine u prah zdrobe"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "i kada se poslanici u određeno vrijeme skupe…"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Do kojeg dana je to odloženo?\" –"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Do Dana sudnjeg"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "A znaš li ti šta je Dan sudnji? –"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Zar Mi nismo drevne narode uništili"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "i poslije njih i one koji su za njima dolazili"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Isto tako ćemo sa svim grješnicima postupiti"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Zar vas od neznatne tekućine ne stvaramo"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "koju na pouzdano mjesto stavljamo"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "do roka određenoga"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Takva je Naša moć; a kako smo Mi samo moćni! –"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Zar Mi nismo učinili Zemlju sabiralištem"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "živih i mrtvih"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "i na njoj nepomične visoke planine postavili, i zar vam Mi ne dajemo da slatku vodu pijete? –"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Idite prema onome što ste neistinom smatrali"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "idite prema dimu u tri prama razdvojenom"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "koji hlada neće davati i koji od plamena neće zaklanjati"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "On će kao kule bacati iskre"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "kao da su kamile riđe. –"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Ovo je dan u kome oni neće ni prozboriti"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "i pravdanje im neće dozvoljeno biti. –"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ovo je Dan sudnji, i vas i narode drevne ćemo sakupiti"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "pa ako se lukavstvom kakvim budete znali poslužiti, dovijte se protiv Mene! –"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Teško toga dana poricateljima"
        }
    ]
}