{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Oni koji su se Allaha bojali biće među izvorima, u gustim baščama"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "i među voćem koje budu željeli"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Jedite i pijte, prijatno neka vam je! – za ono što ste radili"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Tako ćemo Mi one koji čine dobra djela nagraditi. –"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Jedite i naslađujte se, ali zakratko! – vi ste, zaista, grješnici!\" –"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Teško toga dana poricateljima! –"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "jer kad im se govorilo: \"Budite prema Allahu ponizni!\" – oni to nisu htjeli biti. –"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Teško toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Pa u koji će govor, ako ne u Kur'an, vjerovati"
        }
    ]
}