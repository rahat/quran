{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kunem se Danom kada Smak svijeta nastupi"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "i kunem se dušom koja sebe kori"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Zar čovjek misli da kosti njegove nećemo sakupiti"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Hoćemo, Mi možemo stvoriti jagodice prsta njegovih ponovo"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Ali, čovjek hoće dok je živ da griješi"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "pa pita: \"Kada će Smak svijeta biti"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Kad se pogled od straha ukoči"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "i Mjesec pomrači"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "i Sunce i Mjesec spoje –"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "tog dana čovjek će povikati: \"Kuda da se bježi"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Nikuda! Utočišta nema"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Toga dana biće Gospodaru tvome prepušten"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "toga dana čovjek će o onome što je pripremio, a što propustio obaviješten biti"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "sam čovjek će protiv sebe svjedočiti"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "uzalud će mu biti što će opravdanja svoja iznositi"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ne izgovaraj Kur'an jezikom svojim da bi ga što prije zapamtio"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Mi smo dužni da ga saberemo da bi ga ti čitao"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "A kada ga čitamo, ti prati čitanje njegovo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "a poslije, Mi smo dužni da ga objasnimo"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Uistinu, vi ovaj prolazni svijet volite"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "a o onom drugom brigu ne vodite"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Toga dana će neka lica blistava biti"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "u Gospodara svoga će gledati"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "toga dana će neka lica smrknuta biti"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "tešku nevolju će očekivati"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Pazi! Kada duša dopre do ključnih kosti"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "i vikne se: \"Ima li vidara"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "i on se uvjeri da je to čas rastanka"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "i noga se uz nogu savije"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "toga dana će Gospodaru tvome priveden biti"
        }
    ]
}