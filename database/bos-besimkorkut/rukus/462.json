{
    "rukus": [
        {
            "chapter": 53,
            "verse": 33,
            "text": "Reci ti Meni o onome koji istinu izbjegava"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "i malo udjeljuje, i posve prestane udjeljivati"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "zna li on ono što je skriveno, pa vidi"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "Zar on nije obaviješten o onome što se nalazi u listovima Musaovim"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "i Ibrahimovim – koji je obaveze potpuno ispunjavao –"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "da nijedan grješnik tuđe grijehe neće nositi"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "i da je čovjekovo samo ono što sâm uradi"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "i da će se trud njegov, sigurno, iskazati"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "i da će prema njemu u potpunosti nagrađen ili kažnjen biti"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "i da će se Gospodaru tvome ponovo vratiti"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "i da On na smijeh i na plač navodi"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "i da On usmrćuje i oživljava"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "i da On par, muško i žensko, stvara"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "od kapi sjemena kad se izbaci"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "i da će ih On ponovo oživiti"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "i da On daje bogatstvo i moć da stječu"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "i da je On Sirijusa Gospodar"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "i da je On drevni narod Ad uništio"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "i Semud, i da nikog nije poštedio"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "i još prije Nuhov narod, koji je najokrutniji i najobjesniji bio"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "i prevrnuta naselja On je prevrnuo"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "i snašlo ih je ono što ih je snašlo"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "pa, u koju blagodat Gospodara svoga ti još sumnjaš"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "Ovaj Kur'an je opomena kao i prijašnje opomene"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "Smak svijeta se približava"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "Allah će ga jedini otkriti"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "Pa zar se ovom govoru iščuđavate –"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "i smijete se, a ne plačete –"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "gordo dignutih glava"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "Bolje padajte licem na tle pred Allahom i klanjajte se"
        }
    ]
}