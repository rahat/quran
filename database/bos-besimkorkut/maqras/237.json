{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Hvali ime Gospodara svoga Svevišnjeg"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "koji sve stvara i čini skladnim"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "i koji sve s mjerom određuje i nadahnjuje"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "i koji čini da rastu pašnjaci"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "i potom čini da postanu suhi, potamnjeli"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Mi ćemo te naučiti da izgovaraš pa ništa nećeš zaboraviti"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "osim onoga što će Allah htjeti – jer, On zna i ono što na javu iznosite i ono što tajite –"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "i sve što je dobro Mi ćemo tebi dostupnim učiniti"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "zato poučavaj – pouka će već od koristi biti"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "dozvaće se onaj koji se Allaha boji"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "a izbjegavaće je onaj najgori"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "koji će u vatri velikoj gorjeti"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pa u njoj neće ni umrijeti ni živjeti"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Postići će šta želi onaj koji se očisti"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "i spomene ime Gospodara svoga pa molitvu obavi"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ali, vi više život na ovom svijetu volite"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "a onaj svijet je bolji i vječan je"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ovo, doista, ima u listovima davnašnjim"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "listovima Ibrahimovim i Musaovim"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Da li je doprla do tebe vijest o teškoj nevolji? –"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "kada će se neka lica potištena"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "premorena, napaćena"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "u vatri užarenoj pržiti"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "sa vrela uzavrelog piti"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "kada drugog jela osim trnja neće imati"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "koje neće ni ugojiti ni glad utoliti"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Neka lica toga dana biće radosna"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "trudom svojim zadovoljna –"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "u Džennetu izvanrednome"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "u kome prazne besjede neće slušati"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "U njemu su izvor-vode koje teku"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "u njemu su i divani skupocjeni"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "i pehari postavljeni"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "i jastuci poredani"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "i ćilimi rašireni"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Pa zašto oni ne pogledaju kamile – kako su stvorene"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "i nebo – kako je uzdignuto"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "i planine – kako su postavljene"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "i Zemlju – kako je prostrta"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ti poučavaj – tvoje je da poučavaš"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ti vlast nad njima nemaš"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "A onoga koji glavu okreće i neće da vjeruje"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "njega će Allah najvećom mukom mučiti"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Nama će se oni, zaista, vratiti"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "i pred Nama će, doista, račun polagati"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Tako mi zore"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "i deset noći"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "i parnih i neparnih"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "i noći kada nestaje –"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "zar to pametnom zakletva nije…"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Zar ne znaš šta je Gospodar tvoj sa Adom uradio"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "sa stanovnicima Irema, punog palata na stupovima"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "kojima ravna ni u jednoj zemlji nije bilo"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "i Semudom, koji je stijene u dolini klesao"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "i faraonom, koji je šatore imao –"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "koji su na Zemlji zulum provodili"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "i poroke na njoj umnožili"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "pa je Gospodar tvoj – bič patnje na njih spustio"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "jer, Gospodar tvoj je, zaista, u zasjedi"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Čovjek, kada Gospodar njegov hoće da ga iskuša pa mu počast ukaže i blagodatima ga obaspe, rekne: \"Gospodar moj je prema meni plemenito postupio"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "A kad mu, da bi ga iskušao, opskrbu njegovu oskudnom učini, onda rekne: \"Gospodar moj me je napustio"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "A nije tako! Vi pažnju siročetu ne ukazujete"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "i da se puki siromah nahrani – jedan drugog ne nagovarate"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "a nasljedstvo pohlepno jedete"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "i bogatstvo pretjerano volite"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "A ne valja to! Kada se Zemlja u komadiće zdrobi"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "i kad dođe naređenje Gospodara tvoga, a meleki budu sve red do reda"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "i kad se tog Dana primakne Džehennem; tada će se čovjek sjetiti – a na što mu je sjećanje?! –"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "i reći: \"Kamo sreće da sam se za ovaj život pripremio"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Tog Dana niko neće kao On mučiti"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "i niko neće kao On u okove okivati"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "A ti, o dušo smirena"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "vrati se Gospodaru svome zadovoljna, a i On tobom zadovoljan"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "pa uđi među robove Moje"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "i uđi u Džennet Moj"
        }
    ]
}