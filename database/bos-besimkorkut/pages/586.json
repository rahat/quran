{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kada sunce sjaj izgubi"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "i kada zvijezde popadaju"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "i kada se planine pokrenu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "i kada steone kamile bez pastira ostanu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "i kada se divlje životinje saberu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "i kada se mora vatrom napune"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "i kada se duše sa tijelima spare"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "i kada živa sahranjenā djevojčica bude upitana"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "zbog kakve krivice je umorena"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "i kada se listovi razdijele"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "i kada se nebo ukloni"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "i kada se Džehennem raspali"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "i kada se Džennet približi –"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "svako će saznati ono što je pripremio"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "I kunem se zvijezdama – koje se skrivaju"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "koje se kreću i iz vida gube"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "i noći kad ona veo diže"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "i zorom kada diše –"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kur'an je, zaista, kazivanje Izaslanika plemenitog"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "moćnog, od Gospodara svemira cijenjenog"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "kome se drugi potčinjavaju, tamo pouzdanog"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "A drug vaš nije lud"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "on ga je na obzorju jasnom vidio"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "i, kada je u pitanju Objava, on nije škrt"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "i Kur'an nije prokletog šejtana govor"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "pa kuda onda idete"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Kur'an je samo pouka svjetovima"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "onome od vas koji hoće da je na Pravome putu"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "a vi ne možete ništa htjeti ako to Allah, Gospodar svjetova, neće"
        }
    ]
}