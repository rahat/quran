{
    "pages": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "On se namrštio i okrenuo"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "zato što je slijepac njemu prišao"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "A šta ti znaš – možda on želi da se očisti"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "ili pouči pa da mu pouka bude od koristi"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Onoga koji je bogat"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "ti njega savjetuješ"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "a ti nisi kriv ako on neće da vjeruje"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "a onoga koji ti žureći prilazi"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "i strah osjeća"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ti se na njega ne osvrćeš"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Ne čini tako! Oni su pouka –"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "pa ko hoće, poučiće se –"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "na listovima su cijenjenim"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "uzvišenim, čistim"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "u rukama pisārā"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "časnih, čestitih"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Proklet neka je čovjek! Koliko je on samo nezahvalan"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Od čega ga On stvara"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Od kapi sjemena ga stvori i za ono što je dobro za njega pripremi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "i Pravi put mu dostupnim učini"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "zatim mu život oduzme i učini da bude sahranjen"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "i poslije će ga, kada On bude htio, oživiti"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Uistinu! On još nije ispunio ono što mu je On naredio"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Neka čovjek pogleda u hranu svoju"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Mi obilno kišu prolivamo"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "zatim zemlju pukotinama rasijecamo"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "i činimo da iz nje žito izrasta"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "i grožđe i povrće"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "i masline i palme"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "i bašče guste"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "i voće i pića"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "na uživanje vama i stoci vašoj"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "A kada dođe glas zaglušujući –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "na Dan kada će čovjek od brata svoga pobjeći"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "i od majke svoje i od oca svoga"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "i od drúge svoje i od sinova svojih –"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "toga Dana će se svaki čovjek samo o sebi brinuti –"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "neka lica biće toga Dana blistava"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "nasmijana, radosna"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "a na nekim licima toga Dana biće prašina"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "tama će ih prekrivati"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "to će nevjernici – razvratnici biti"
        }
    ]
}