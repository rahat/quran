{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Čitaj, u ime Gospodara tvoga, koji stvara"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "stvara čovjeka od ugruška"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Čitaj, plemenit je Gospodar tvoj"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "koji poučava peru"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "koji čovjeka poučava onome što ne zna"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Uistinu, čovjek se uzobijesti"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "čim se neovisnim osjeti"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "a Gospodaru tvome će se, doista, svi vratiti"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Vidje li ti onoga koji brani"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "robu da molitvu obavi"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Reci mi ako on misli da je na Pravome putu"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ili ako traži da se kumirima moli"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "reci mi, ako on poriče i glavu okreće –"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "zar on ne zna da Allah sve vidi"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Ne valja to! Ako se ne okani, dohvatićemo ga za kiku"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "kiku lažnu i grješnu"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "pa neka on pozove društvo svoje –"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Mi ćemo pozvati zebanije"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Ne valja to! Ti njega ne slušaj, već molitvu obavljaj i nastoj da se Gospodaru svome približiš"
        }
    ]
}