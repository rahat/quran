{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Azab olsun, (insanları arkalarından cekistiren) her ayıblayıcıya, yuzlerine karsı dil uzatıcıya"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki, bir cok mal toplamıs ve onu sayıb durmaktadır"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Sanıyor ki, onun malı, kendisini (dunyada) ebedilestirecektir"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, (malı onu kurtaramaz). Muhakkak o Hutame’ye (atese) atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Bildin mi Hutame nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "O, Allah’ın tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Oyle ki, onun acısı kalblere kadar girer"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O (ates), kapatılacaktır onların ustune"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzatılmıs direklere baglı oldukları halde"
        }
    ]
}