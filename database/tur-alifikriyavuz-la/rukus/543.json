{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "(Dehsetiyle kalblere carpacak) o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Ne bildirdi sana, nedir o kıyamet"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar, cırpınıp yayılan kelebekler (pervaneler) gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da atılmıs renkli yunler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste o vakit, kimin tartıları (iyilikleri) agır gelmisse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Artık o, hosnud bir hayattadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat kimin de tartıları (iyilikleri) hafif gelmisse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Artık onun yeri Haviye’dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Bildin mi Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir atestir"
        }
    ]
}