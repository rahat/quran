{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Felâket kapısını çalacak olan (kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o felâket kapısını çalacak (kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O felâket kapısını çalacak (kıyametin dehşet ve azametin) sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar yaygın (ve salgın) pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "dağlar atılmış renkli yünler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "İşte (o gün) kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık o hoşnuud (olacağı) bir yaşayışdadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Amma kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "artık onun anası «Hâviye» (uçurum) dur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun mâhiyyetini sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "haraareti çetin bir ateşdir"
        }
    ]
}