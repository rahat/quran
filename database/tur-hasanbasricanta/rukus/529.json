{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin o yüce adını tesbîh (ve tenzîh) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki o, (her şey´i) yaratıb düzenine koyandır"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdîr eden, (ona göre de) yol gösterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yeşil otu çıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kapkara, kupkuru bir haale getirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "(Habîbim) seni okutacağız da (asla) unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allahın dilediği başka. Çünkü O, aşikârı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay olana muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eğer öğüd fâide verirse (durma) öğüd ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allahdan) korkacak olan öğüdü kabul eder"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Peki bedbaht olan ise ondan kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en büyük ateşe girecek"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra orada hem ölmeyecek, hem dirilmeyecek olandır O"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Hakıykat iyi temizlenen ve Rabbinin adını zikredib de namaz kılan kimse umduğuna erişmişdir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Hakıykat iyi temizlenen ve Rabbinin adını zikredib de namaz kılan kimse umduğuna erişmişdir"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Belki siz dünyâ hayaatını (âhiretden) üstün tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Halbuki âhiret daha hayırlı, daha süreklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şübhesiz ki bu (nlar) evvelki sahîfelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrâhîm ile Musânın sahîfelerinde de vardır"
        }
    ]
}