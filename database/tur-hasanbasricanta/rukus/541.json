{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, kendisine âid şiddetli bir sarsıntı ile zelzeleye uğratıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "yer, (bütün) ağırlıklarını (dışarıya fırlatıb) çıkardığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "insan «Buna ne oluyor?» dediği (zaman)"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün (yer) bütün haberlerini anlatacakdır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbi kendisine (o vech ile) vahyetmişdir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, amelleri (nin karşılığı) kendilerine gösterilmek için, dağınık dönecek (ler) dir"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "İşte kim zerre ağırlığınca bir hayır yapıyor (idiy) se onu (n sevabını) görecek"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "kim de zerre ağırlığınca şer yapıyor (idiy) se onu (n cezasını) görecek"
        }
    ]
}