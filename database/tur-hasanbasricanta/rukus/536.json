{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "(Habîbim) göğsünü senin (fâiden) için (açıb da) genişletmedik mi? (Genişletdik)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Senden yükünü de (kaldırıb) atdık"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "(Öyle yükdü ki o) senin sırtına ağır gelmiş, (kemiklerini gıcırdatmış) dı"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin nâmına da yükseltdik"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek, hakıykaten güçlükle beraber kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Muhakkak güdükle beraber kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde boş kaldın mı hemen yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve (her işinde) ancak Rabbine sarıl"
        }
    ]
}