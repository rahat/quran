{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Felaket kapısını calacak olan (kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o felaket kapısını calacak (kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O felaket kapısını calacak (kıyametin dehset ve azametin) sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar yaygın (ve salgın) pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "daglar atılmıs renkli yunler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste (o gun) kimin tartıları agır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık o hosnuud (olacagı) bir yasayısdadır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Amma kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "artık onun anası «Haviye» (ucurum) dur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun mahiyyetini sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "haraareti cetin bir atesdir"
        }
    ]
}