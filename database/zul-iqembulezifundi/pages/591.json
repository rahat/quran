{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Ngifunga ngesibhakabhaka nangokukhanyayo ebusuku"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Futhi yini ekwenza wazi ukuthi yini okukhanyayo ebusuku"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Yinkanyezi ekhanyayo"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Awukho umphefumulo kepha phezu kwawo kunomlondolozi"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Ngakho-ke akabheke umuntu ukuthi wadalwa ngani"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Wadalwa\tngamanzi\t(uketshezi)\tolukhishwa\t(owesilisa nowesifazane) isidoda"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Aphuma phakathi emgogodleni nasezimbanjeni"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Ngempela yena (uMvelinqangi) uyakwazi ukumphindisela emumva (empilweni)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Ngosuku lapho izimfihlo ziyolingwa (ziyovezwa obala)"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Ngifunga ngakho-ke angeke abenawo amandla nomsizi"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Futhi ngifunga ngezulu (ngesibhakabhaka) esiletha imvula ngokuphindelela"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Futhi ngifunga ngomhlaba ngenkathi uqhekeka phakathi"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Ngempela kona kuyinkulumo ehlukanisayo (okuhle nokubi)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Futhi kona akuyiwona umdlalo"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Ngempela bona benza icebo"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Futhi nami ngenza icebo"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Ngakho-ke\tbanike\tithuba\tabangakholwa,\tbayekwe okwesikhashana ngobumnene"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Dumisa igama leNkosi yakho ephakeme kakhulu"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Okuyiyona eyadala yalinganisa (konke ngesimo sako)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Futhi okuyiyona ekalayo futhi eholayo"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Futhi okuyiyona eyaveza okuluhlaza (utshani nezihlahla)"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Yabe seyikwenza kwaba yizinhlanga ezinsundu"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sizokwenza ukuthi ufunde angeke ukhohlwe"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ngaphandle kwalokho okufiswa nguMvelinqangi, ngempela yena uyakwazi okusobala kanye nalokho okufihlekile"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Futhi sikwenzela kubelula okulula"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ngakho-ke\tkhumbuza\tuma\tkungukuthi\tsiyakusiza isikhumbuzo"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Uyokhumbula lowo owesaba (uMvelinqangi)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Futhi uyokugwema (ukukhunjuzwa) lowo muntu omubi kakhulu"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Lowo uzokusha emlilweni omkhulu"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Bese engafi lapho phakathi kuwona futhi angaphili"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ngempela uphumelele lowo ozihlanzayo"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Futhi akhumbule igama leNkosi yakhe athandaze"
        }
    ]
}