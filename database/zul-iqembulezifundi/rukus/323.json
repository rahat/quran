{
    "rukus": [
        {
            "chapter": 26,
            "verse": 141,
            "text": "Abantu baThamud baziphika izithunywa"
        },
        {
            "chapter": 26,
            "verse": 142,
            "text": "Khumbula ngenkathi umfowabo uSwalih ethi kubona “animesabi yini na uMvelinqangi.”"
        },
        {
            "chapter": 26,
            "verse": 143,
            "text": "Ngempela mina ngiyisithunywa esethembekile kunina"
        },
        {
            "chapter": 26,
            "verse": 144,
            "text": "Ngakho-ke yesabani uMvelinqangi futhi ningihloniphe"
        },
        {
            "chapter": 26,
            "verse": 145,
            "text": "Futhi angiwufuni kunina umvuzo ngako, umvuzo wami awukho komunye umuntu ngaphandle kokuba useNkosini yemihlaba"
        },
        {
            "chapter": 26,
            "verse": 146,
            "text": "Ngakube nizoyekwa niphephile kulokhu enikukona lapha"
        },
        {
            "chapter": 26,
            "verse": 147,
            "text": "Ezivandeni nasemithonjeni"
        },
        {
            "chapter": 26,
            "verse": 148,
            "text": "Nasemasimini nasezihlahleni zesundu isixha sazo sithambile"
        },
        {
            "chapter": 26,
            "verse": 149,
            "text": "Futhi nimba izintaba ngobiciko ukuze nakhe izindlu"
        },
        {
            "chapter": 26,
            "verse": 150,
            "text": "Ngakho-ke mesabeni uMvelinqangi futhi ningihloniphe"
        },
        {
            "chapter": 26,
            "verse": 151,
            "text": "Futhi ningayihloniphi impoqo yezaphulamthetho"
        },
        {
            "chapter": 26,
            "verse": 152,
            "text": "Labo abenza ukona ezweni, abangalungisi"
        },
        {
            "chapter": 26,
            "verse": 153,
            "text": "Bathi, “kuphela wena ungomunye wabalunjiwe”"
        },
        {
            "chapter": 26,
            "verse": 154,
            "text": "Awuyilutho ngaphandle kokuba ngumuntu onjengathi ngakho-ke makunjalo veza uphawu uma kungukuthi wena ungomunye wabaqinisile"
        },
        {
            "chapter": 26,
            "verse": 155,
            "text": "Wathi, “leli yikameli lensikazi linelungelo lokuphuza, nani ninelungelo lokuphuza ngosuku olwaziwayo”"
        },
        {
            "chapter": 26,
            "verse": 156,
            "text": "Futhi ningalithinti ngobubi hleze nithathwe yisijeziso sosuku olukhulu"
        },
        {
            "chapter": 26,
            "verse": 157,
            "text": "Kepha balibulala (ikameli) base bephenduka abazisolayo"
        },
        {
            "chapter": 26,
            "verse": 158,
            "text": "Ngakho-ke\tbathathwa\tyisijeziso,\tngempela\tkulokho kunesifundo futhi iningi labo lalingeyibona abakholwayo"
        },
        {
            "chapter": 26,
            "verse": 159,
            "text": "Futhi ngempela iNkosi yakho yona iphakeme ngamandla inesihawu"
        }
    ]
}