{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Khumbula ngenkathi ilanga lisongwa"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Khumbula nangenkathi izinkanyezi zihlakazeka"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Khumbula nangenkathi izintaba zisuswa (zibhidlizwa)"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Khumbula nangenkathi amakameli amithi enganakwa"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Khumbula nangenkathi izilwane zasendle ezinkulu ziqoqelwa ndawonye"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Khumbula nangenkathi izilwandle ziba njengemililo evuthayo (zihlangana izilwandle)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Khumbula\tnangenkathi\timiphefumulo\tihlanganiswa nemizimba yayo"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Khumbula\tkanye\tnentombazane\teyangcwatshwa\tiphila ibuzwa"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Khumbula ukuthi yabulawelani na"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Khumbula nangenkathi amakhasi (amaphepha) evulwa"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Khumbula nangenkathi isibhakabhaka sivulwa"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Khumbula nangenkathi isihogo senziwa ukuthi sivuthe"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Khumbula nangenkathi isivande sisondezwa"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Uyokwazi umphefumulo lokho okuwulethile (izenzo ezinhle noma ezimbi)"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Ngakho-ke ngifunga ngezinkanyezi"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Ezihambayo bese ziyacasha"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Nangobusuku ngenkathi buhamba (kuvela ukukhanya)"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nangokusa ngenkathi kukhanya"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Ngempela kona kuyinkulumo yesithunywa esihloniphekile"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Umnikazi wamandla kanye nomnikazi wesihlalo sobukhosi osezingeni eliphezulu"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Usihloniphekile futhi uthembekile (uMuhammad)"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Futhi umngane wenu akahlanyi"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Futhi ngempela wambona (uGabriyeli) esemkhathini ocacile"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Futhi yena akancishani (nolwazi) lokungabonwa"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Futhi yona (iQurâ€™an) ayisiyona inkulumo kasathane ogxoshiwe (ezulwini)"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Niyaphi ke"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Lokhu akuyilutho ngaphandle kwesikhumbuzo semihlaba (sabantu namajinn)"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Kunoma ngabe ngubani phakathi kwenu othanda ukuqonda"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Futhi anithandi ngaphandle kokuba kuthanda uMvelinqangi iNkosi yemihlaba (abantu namajinn)"
        }
    ]
}