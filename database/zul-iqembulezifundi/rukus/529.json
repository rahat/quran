{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Dumisa igama leNkosi yakho ephakeme kakhulu"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Okuyiyona eyadala yalinganisa (konke ngesimo sako)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Futhi okuyiyona ekalayo futhi eholayo"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Futhi okuyiyona eyaveza okuluhlaza (utshani nezihlahla)"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Yabe seyikwenza kwaba yizinhlanga ezinsundu"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sizokwenza ukuthi ufunde angeke ukhohlwe"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ngaphandle kwalokho okufiswa nguMvelinqangi, ngempela yena uyakwazi okusobala kanye nalokho okufihlekile"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Futhi sikwenzela kubelula okulula"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ngakho-ke\tkhumbuza\tuma\tkungukuthi\tsiyakusiza isikhumbuzo"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Uyokhumbula lowo owesaba (uMvelinqangi)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Futhi uyokugwema (ukukhunjuzwa) lowo muntu omubi kakhulu"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Lowo uzokusha emlilweni omkhulu"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Bese engafi lapho phakathi kuwona futhi angaphili"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ngempela uphumelele lowo ozihlanzayo"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Futhi akhumbule igama leNkosi yakhe athandaze"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Kepha nikhetha impilo yalomhlaba"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Futhi impilo ezayo ingcono futhi ingehlalayo engapheliyo"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ngempela lokhu kusemibhalweni yokuqala"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Imibhalo ka-Abrahamu noMose"
        }
    ]
}