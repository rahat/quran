{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Babuzana ngani na"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Ngezindaba ezinkulu"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Lezo bona abaphikisana ngazo"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Lutho! Bayokwazi"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Lutho! Futhi bayokwazi"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Asizange yini siwenze umhlaba ube umbhede (indawo yokuphumula) na"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Kanye nezintaba zaba yizikhonkwane (ezibanjwe umhlaba)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Futhi sanidala ngambili (isilisa nesifazane)"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Futhi sakwenza ukulala kwenu kwaba ukuphumula"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Futhi sabenza ubusuku babayisembozo"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Futhisayenzaiminiyabangeyokuhamba(ukuzekusetshenzwe)"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Futhi sakha phezulu kwenu okuyisikhombisa okuqatha"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Futhi sabeka isibani esikhanyayo"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Futhi sehlisela phansi amanzi aphophozayo avela amafini"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ukuze siveze ngawo uhlamvu nokumilayo (izihlahla notshani)"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Kanye nezivande ezinhle"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Ngempela usuku lokwahlulela yisikhathi esinqunyiwe"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Usuku okuyoshawa ngalo icilongo bese niyeza niyizixuku"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Futhi liyovulwa izulu bese kuba yiminyango"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Futhi izintaba ziyosuswa futhi zibe yinkohliso"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Futhi isihogo ngasosonke isikhathi silindile"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "(Isihogo) yindawo yokuhlala yabaphula umthetho"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Bayohlala phakathi kusona ingunaphakade"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Angeke bazwe phakathi kusona ukubanda futhi angeke (zithole) ukuphuza"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ngaphandle kwamanzi abilayo nobovu"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Umvuzo ofanele"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Ngempelabonababengakulindeleukubalelwa(ukwehlulelwa)"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Futhi babewaphika ngempela amavesi kaMvelinqangi"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Futhi zonke izinto sazibhala encwadini"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Ngakho-ke yizwani, manjalo angeke sininezelele ngalutho ngaphandle\tkwesijeziso"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Ngempela okwabalungileyo (abamesabayo uMvelinqangi) okwabo yimpumelelo"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Izivande kanye namagilebhisi"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Nezintombi ezinhle ezakhiwe kahle ezilinganayo ngeminyaka"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Nenkomishi echichimayo"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Lapho phakathi abayizwa inkulumo eyize noma amanga"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Umvuzo ovela eNkosini yakho, isipho esibaliwe"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "INkosi yamazulu nomhlaba kanye nakho konke okuphakathi kwako kokubili(iNkosi) enomusa, abangakwaziukukhuluma nayo"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Ngosuku lapho uGabriyeli nezingelosi kuyokuma ngabolayini, angeke bakhulume ngaphandle kwalowo ovunyelwe (uMvelinqangi)\tonomusa futhi akhulume okulungile"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Lolo wusuku lwangempela, manjalo noma ngabe ngubani othanda ukuthatha isiphephelo eNkosini yakhe"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Ngempela sanixwayisa ngesijeziso esiseduze, usuku lapho umuntu eyobona lokho okuthunyelwe ngaphambili yizandla zakhe futhi bayothi abangakholwa “Oh ngifisa sengathi ngangiwuthuli”"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Ngifunga ngokukhiphayo okucwilisayo"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Ngifunga ngokukhipha ngobumnene"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Ngifunga ngokubhukudayo, ngokubhukuda ngokushesha"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Ngifunga ngokuncintisanayo ngokushesha"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ngokwenza icebo odabeni"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "Usuku okuyokhala ngalo (icilongo) kunyakaze umhlaba"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Kuyolandelwa okukhala kwecilongo kwesibili"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Izinhliziyo ngalolosuku ziyoqhaqhazela"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Ukubuka kwabo kuyojabhiswa"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Bathi, “ngakube ngempela siyobuyiselwa yini esimweni sokuqala (sempilo) na?”"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ngisho noma ngabe sesingamathambo abolile"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Bathi,\t“lokho\tkuyokuba\tukuphindela\t(empilweni) enokulahlekelwa"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Kuphela kuyokuba ukukhala okukodwa"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Kulapho bona besemhlabeni"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Ngakube yafika yini kuwena indaba kaMose"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Ngenkathi ebizwa yiNkosi yakhe esigodini esingcwele iTuwa"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "(Ithi) hamba uye kuFaro ngempela yena wephule umthetho"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Bese uthi (kuyena) “ngakube uyafuna yini ukuzihlanza"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Futhi ngikuholele eNkosini yakho ukuze uyesabe"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ngakho-ke wamkhombisa uphawu olukhulu"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Kepha (uFaro) wenqaba wangahloniphi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Wayesephendukela emumva ezabalaza"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Ngakho-ke waqoqa wamemeza"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Wayesethi, “mina ngiyiNkosi yenu ephakeme kakhulu”"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Ngakho-ke wamthatha uMvelinqangi ngesijeziso esiyisibonelo sempilo\tezayo neyamanje"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Ngempela\tkulokho\tkunesifundo\tkulowo\towesaba (uMvelinqangi) olungileyo"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Ngakube nina ninzima yini ekudalweni noma yizulu alakhile na"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Wakuphakamisa ukuphakama kwalo walenza labalihle"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Futhi wamboza ubusuku balo futhi wakhipha ukukhanya kwalo"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Nomhlaba emva kwalokho wawendlala"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Wakhipha kuwona amanzi awo nedlelo lawo"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Kanye nezintaba wazizinzisa zaqina"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Injabulo (isabelo) senu kanye nezinkomo zenu"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Manjalo ngenkathi kufika isehlakalo esikhulu"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Usuku lapho umuntu ekhumbula konke akuzabalazele"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Futhi siyovezwa obala isihogo kulowo obonayo"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Mayelana nalowo owephula umthetho"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Futhi wakhetha impilo yalomhlaba"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Ngakho-ke ngempela isihogo sona siyindawo yokuhlala"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Futhi mayelana nowesaba isimo seNkosi yakhe futhi anqabele umphefumulo (wakhe) ezikhanukweni"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Ngakho-ke ngempela isivande sona siyindawo yokuhlala"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Bakubuza ngehora ukuthi liyofika nini"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Yini wena ongayisho ngalo na"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "YiseNkosini yakho lapho liphelela khona (ulwazi lwalo) ihora"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Kuphela wena ungumxwayisi kulowo olesabayo"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Ngosuku abayolibona ngalo (ihora) kuyokuba sengathi bona abazange bahlale (kulomhlaba) ngaphandle kwentambama noma ikuseni kwalo"
        }
    ]
}