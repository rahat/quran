{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "The calamity"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "what is the calamity"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "And what shall apprise thee of the calamity"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "A day wherein mankind shall be like scattered moths"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "and the mountains shall be like carded wool"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "As for one whose scales are heavy"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "he shall enjoy a life contenting"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "And as for one whose scales are light"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "an abyss shall be his mother"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "And what shall apprise thee of her"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "It is a raging fire"
        }
    ]
}