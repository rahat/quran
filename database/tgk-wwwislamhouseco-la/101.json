{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "[On] Furukuʙanda"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "[On] Furukuʙanda cist"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Va tu ci doni, ki [on] furukuʙanda cist"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Ruze, ki mardum monandi parvonahoi parokanda [hajronu sargardon] xohand ʙud"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Va kuhho monandi pasmi rangini hallocisuda (zadasuda) xohand sud"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Va ammo har kase, ki [dar on ruz] pallai mizonas sangin ʙosad"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "[Dar ʙihist] Dar zindagii rohatʙaxs xohad ʙud"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Va ammo har kas, ki pallai mizonas saʙuk ʙosad"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Pas, [maskanu] panohgohas «hovija» ast"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Va tu ci doni, ki on [hovija] cist"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Otase ast suzon [va su'lavar]"
        }
    ]
}