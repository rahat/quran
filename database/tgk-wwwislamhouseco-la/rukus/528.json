{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Savgand ʙa osmon va savgand ʙa sitorai saʙgard"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Va ci medoni, ki sitorai saʙgard cist"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "[Hamon] Sitorai furuzon ast"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hec kas nest magar on ki ʙar u nigahʙone [az faristagon gumosta suda] ast"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Inson ʙojad ʙingarad, ki az ci ciz ofarida sudaast"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Az jak oʙi cahanda ofarida sudaast"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Ki az mijoni [ustuxoni] pust [-i mard] va sina [-i zan] ʙerun meojad"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Be gumon, Alloh taolo ʙar ʙozgardondani u [pas az marg] tavonost"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Ruze, ki rozho oskor gardad"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "[Dar on ruz] Inson hec tavonu jovare nadorad"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Savgand ʙa osmoni purʙoron"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Va savgand ʙa zamini pursikof [ki gijohon az on sar ʙarmeovarand]"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Be gumon, in Qur'on suxani cudokunandai haq az ʙotil ast"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Va [suxani] hazlu ʙehuda nest"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onon [kofiron] pajvasta hila va najrang mekunand"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Va man [niz] hila [va tadʙir] mekunam"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Pas, kofironro muhlat deh, [va] andake rahojason kun [to ƣarqi gunoh ʙosand]"
        }
    ]
}