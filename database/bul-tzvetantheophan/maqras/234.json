{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Той се намръщи и обърна гръб"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "че при него е дошъл слепецът"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Но ти откъде знаеш, може да се пречисти"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Или да се поучи, та да му е от полза поуката"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "А онзи, който е безразличен"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "с него си се заел"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "И не е твоя грижа, че не се пречиства"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "А от онзи, който е дошъл при теб с упоритост"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "и е богобоязлив"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "от него ти се отклоняваш"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Ала не! Това е поучение"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "и който пожелае, той се поучава"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "в Писания почитани"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "въздигнати, пречистени"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "[преписани] от ръце на [ангели-] писари"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "достойни, благочестиви"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Проклет да е човекът! Колко е неблагодарен"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "От какво нещо го е сътворил Той"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "От частица сперма Той го сътвори и осъразмери"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "После пътя му облекчи"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "После го умъртви и повели да бъде погребан"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "После, когато Той пожелае, ще го възкреси"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Ала не! Не изпълни той Неговата повеля"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Да погледне човекът своето препитание"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Ние проливаме обилно водата"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "После разпукваме земята"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "и правим от нея да поникнат зърна"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "и грозде, и зеленина"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "и маслини, и палми"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "и гъсти градини"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "и плод, и трева"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "за ползване от вас и от вашия добитък"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "И когато Грохотът настъпи"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "в Деня, когато мъжът избяга от брат си"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "и от майка си, и от баща си"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "и от жена си, и от децата си"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "всеки от тях в този Ден ще е зает с дело, което ще го поглъща"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Едни лица в този Ден ще бъдат сияещи"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "засмени, възрадвани"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "а по други в този Ден ще има прах"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ще ги покрива чернилка"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Тези са неверниците, нечестивците"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Когато слънцето бъде обвито [в мрак]"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "и когато звездите изпопадат"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "и когато планините бъдат раздвижени"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "и когато бременните камили бъдат изоставени"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "и когато зверовете бъдат насъбрани"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "и когато моретата закипят"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "и когато душите се съединят"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "и когато живопогребаното момиче бъде попитано"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "за какъв грях е било убито"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "и когато книгите [за делата] бъдат разгърнати"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "и когато небето бъде премахнато"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "и когато Адът бъде нажежен"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "и когато Раят бъде приближен"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "тогава всеки ще узнае какво е извършил"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "О, кълна се в залязващите планети"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "движещи се, скриващи се"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "и в нощта, когато се здрачава"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "и в утринта, когато се развиделява"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "той [Коранът] е слово на достоен пратеник"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "имащ сила, утвърден при Владетеля на Трона"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Покоряват му се [ангелите] там, доверен е"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "И не е луд вашият другар [Мухаммад]"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Той го видя на ясния хоризонт"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "И [вести] от неведомото не укрива"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "И не е [Коранът] слово на прокуден сатана"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Къде отивате тогава"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Това е само поучение за световете"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "за всеки от вас, който желае да е на Правия път"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Тогава ще пожелавате само онова, което желае Аллах, Господът на световете"
        }
    ]
}