{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Да, предпочитате земния живот"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "но отвъдният е по-хубав и по-дълготраен"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Това е [записано] в предишните писания"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "писанията на Ибрахим и на Муса"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Стигна ли до теб разказът за Всепокриващия ден"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Едни лица в този Ден ще са сведени"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "обременени, изнурени"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "ще горят в пламтящ огън"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "ще им се даде от кипящ извор да пият"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "не ще имат друга храна освен от тръни"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "които нито угояват, нито избавят от глад"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "А други лица в този Ден ще са блажени"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "поради своето старание - доволни"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "във възвишена Градина"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Не ще слушат в нея празнословие"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Има там течащ извор"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Има там въздигнати престоли"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "и готови чаши"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "и подредени възглавници"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "и разстлани килими"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "И нима не виждат как бяха сътворени камилите"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "и как бе въздигнато небето"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "и как бяха възправени планините"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "и как бе разпростряна земята"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "И напомняй! Ти си само за да напомняш"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Не си над тях властващ"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "но който се отвърне и не повярва"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "него Аллах ще мъчи с най-голямото мъчение [в Ада]"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "При Нас е тяхното завръщане"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "После Наша грижа е тяхната равносметка"
        }
    ]
}