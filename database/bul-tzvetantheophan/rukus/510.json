{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "О, ти, който се обвиваш [в своите одежди]"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "стани и предупреждавай"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "и твоя Господ възвеличавай"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "и дрехите си почиствай"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "и скверността отбягвай"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "и давайки, не се стреми да получиш вповече"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "и в името на твоя Господ бъди търпелив"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "И когато се протръби с Рога"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "тогава този Ден ще е тежък Ден"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "за неверниците - нелек"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Остави на Мен онзи, когото сътворих самотен"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "и комуто отредих голямо богатство"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "и синове до него"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "и всичко му улесних"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "А после той ламти да му надбавя"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Ала не! Пред Нашите знамения той упорства"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Ще го подложа на непоносимо мъчение"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Размисли той и прецени"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "и - проклет да е! - как прецени"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "И отново - проклет да е! - как прецени"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "После погледна"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "После се намръщи и навъси"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "После се отвърна и се възгордя"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "И рече: “Това е само разпространена магия"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Това е само хорска реч.”"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Ще го пека Аз в Преизподнята"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "И откъде да знаеш ти какво е Преизподнята"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "Тя нищо не оставя и не пощадява"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "обгаря кожата"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Пазят я деветнадесет [ангели]"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "И сторихме пазители на Огъня само ангели, и сторихме броя им единствено за изпитание на неверниците, за да се убедят дарените с Писанието и да се усили вярата на повярвалите, и да не се съмняват дарените с Писанието и вярващите, и за да кажат онези, в чии"
        }
    ]
}