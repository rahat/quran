{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Gâşiyenin (heryeri kuşatıp kaplayacak olan korkunç felâketin) haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "İzin günü zillet içinde olan yüzler vardır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Yorucu işler yapan"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "(Onlar) kızgın ateşe atılırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar su pınarından içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onların yiyeceği dari´den (acı, pis kokulu dikenli ağaçtan) başka bir şey değildir"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Beslemez ve açlığa da bir fayda vermez"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "İzin günü naîm (güzel ve parlak) yüzler vardır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "(Dünyadaki) sa´yından (çalışmasından) razıdır"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Âli cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezsin"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada devamlı akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yüksek tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Ve (önlerine) konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Ve dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve yayılmış süslü kıymetli halılar (vardır)"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Onlar hâlâ deveye bakmıyorlar mı ki, nasıl yaratılmış"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve semaya nasıl yükseltilmiş"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara, nasıl dik olarak yerleştirilmiş"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yeryüzüne, nasıl düzleştirilmiş (bakmıyorlar mı)"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık zikret (hatırlat), sen sadece müzekkirsin (hatırlatıcısın)"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onların üzerinde bir zorlayıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim (arkasını) döner ve inkâr ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "O taktirde Allah onu en büyük azap ile azaplandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Muhakkak ki onların dönüşü Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesapları muhakkak ki Bize aittir"
        }
    ]
}