            "chapter": 94,
            "verse": 1,
            "text": "Göğsünü senin için şerhetmedik mi (yarıp genişletmedik mi)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve senden yükünü kaldırdık (kaldırmadık mı)"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o (yük) senin sırtını bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve senin için, zikrini yükselttik"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "O halde, muhakkak ki zorluk ve kolaylık beraberdir"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Muhakkak ki zorluk ve kolaylık beraberdir"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Öyleyse boş kaldığın zaman hemen intisap et"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve öyleyse Rabbine rağbet et (O´nu öv, hamdet, zikret, tesbih et)"
