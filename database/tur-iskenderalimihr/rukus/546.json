{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan çekiştirmeyi ve kaş-gözle alay etmeyi alışkanlık haline getirenlerin hepsinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki, malı toplardı ve onu, tekrar tekrar sayardı"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının onu ebedî kılacağını sanıyor"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, o mutlaka hutameye (tutuşturulmuş ateşe) atılacak"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Ve hutamenin ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Ki o (hutame) yüreklerin üstüne çıkar (yükselir)"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Muhakkak ki o, onların (kâfirlerin) üzerine kapatılmıştır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzatılmış yüksek sütunlarda olacaklar (bağlanacaklar)"
        }
    ]
}