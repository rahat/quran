{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "O vakıa (müthiş olay) vuku bulduğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun vuku bulmasını yalanlayan (kimse) yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alçaltıcıdır, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "O zaman arz (yeryüzü) şiddetli bir sarsıntıyla sarsılmıştır"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve dağlar ufalanarak parçalanmıştır"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Böylece dağılıp toz zerrecikleri haline gelmiştir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve (o zaman) siz üç sınıfa ayrılmış olursunuz"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "İşte ashabı meymene [meymene sahipleri, amel defteri (hayat filmleri) sağından verilen cennetlikler], (ama) ne ashabı meymene"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ve ashabı meşeme [meşeme sahipleri, amel defteri (hayat filmleri) solundan verilen cehennemlikler], (ama) ne ashabı meşeme"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve sabikunlar (hayırlarda yarışıp ileri geçenler), sabikunlar"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte onlar (sabikunlar). Mukarrip (Allah´a yaklaştırılmış) olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "(Onlar), naim cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onlar), evvelkilerden bir ümmettir"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Ve (onların) birazı sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın ile örülmüş, mücevherlerle (inci ve yakutla) süslenmiş tahtlar üzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların üzerinde karşılıklı olarak yaslananlar onlardır (mukarrebun olanlardır)"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında halidun olan (ölümsüz) gençler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Akan pınarlardan doldurulmuş kâseler, ibrikler ve billur kadehler ile"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan (o şaraptan) başları ağrımaz ve sarhoş olmazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve arzu ettikleri meyvelerden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Ve canlarının çektiği kuş etlerinden (sunulur)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve harika güzel gözlü huriler (vardır)"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki saklanmış inci tanesi gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmış olduklarının mükâfatı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz işitmezler ve günaha girmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece selâm, selâm sözü söylenir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ashabı yemin [yemin sahipleri, amel defterleri (hayat filmleri) sağından verilenler], (ama) ne ashabı yemin"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(Ashabı yemin), dikensiz sedir ağaçları arasında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Ve meyveleri kat kat dizili muz ağaçları (arasında)"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Ve uzayan gölgeler (içinde)"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Ve çağlayan sular (arasında)"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve pekçok meyveler (arasında)"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Eksilmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksetilmiş döşeklerdedirler (tahtlardadırlar)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Muhakkak ki Biz, onları yeni bir inşa (yaratılış) ile inşa ettik (yarattık)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Böylece Biz, onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün, aynı yaşta olarak"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ashabı yemin [yemin sahipleri, amel defterleri (hayat filmleri) önünden ve sağından verilenler] için"
        }
    ]
}