{
    "rukus": [
        {
            "chapter": 54,
            "verse": 41,
            "text": "veleḳad câe âle fir`avne-nnüẕür"
        },
        {
            "chapter": 54,
            "verse": 42,
            "text": "keẕẕebû biâyâtinâ küllihâ feeḫaẕnâhüm aḫẕe `azîzim muḳtedir"
        },
        {
            "chapter": 54,
            "verse": 43,
            "text": "eküffâruküm ḫayrum min ülâiküm em leküm berâetün fi-zzübür"
        },
        {
            "chapter": 54,
            "verse": 44,
            "text": "em yeḳûlûne naḥnü cemî`um münteṣir"
        },
        {
            "chapter": 54,
            "verse": 45,
            "text": "seyühzemü-lcem`u veyüvellûne-ddübüra"
        },
        {
            "chapter": 54,
            "verse": 46,
            "text": "beli-ssâ`atü mev`idühüm vessâ`atü edhâ veemerr"
        },
        {
            "chapter": 54,
            "verse": 47,
            "text": "inne-lmücrimîne fî ḍalâliv vesü`ur"
        },
        {
            "chapter": 54,
            "verse": 48,
            "text": "yevme yüsḥabûne fi-nnâri `alâ vucûhihim. ẕûḳû messe seḳara"
        },
        {
            "chapter": 54,
            "verse": 49,
            "text": "innâ külle şey'in ḫalaḳnâhü biḳader"
        },
        {
            "chapter": 54,
            "verse": 50,
            "text": "vemâ emrunâ illâ vâḥidetün kelemḥim bilbeṣar"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "veleḳad ehleknâ eşyâ`aküm fehel mim müddekir"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "veküllü şey'in fe`alûhü fi-zzübür"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "veküllü ṣagîriv vekebîrim müsteṭar"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "inne-lmütteḳîne fî cennâtiv veneher"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "fî maḳ`adi ṣidḳin `inde melîkim muḳtedir"
        }
    ]
}