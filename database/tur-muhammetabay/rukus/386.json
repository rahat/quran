{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "veṣṣâffâti ṣaffâ"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "fezzâcirâti zecrâ"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "fettâliyâti ẕikrâ"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "inne ilâheküm levâḥid"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "rabbü-ssemâvâti vel'arḍi vemâ beynehümâ verabbü-lmeşâriḳ"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "innâ zeyyenne-ssemâe-ddünyâ bizînetini-lkevâkib"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "veḥifżam min külli şeyṭânim mârid"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "lâ yessemme`ûne ile-lmelei-l'a`lâ veyuḳẕefûne min külli cânib"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "düḥûrav velehüm `aẕâbüv vâṣib"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "illâ men ḫaṭife-lḫaṭfete feetbe`ahû şihâbün ŝâḳib"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "festeftihim ehüm eşeddü ḫalḳan em men ḫalaḳnâ. innâ ḫalaḳnâhüm min ṭînil lâzib"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "bel `acibte veyesḫarûn"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "veiẕâ ẕükkirû lâ yeẕkürûn"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "veiẕâ raev âyetey yestesḫirûn"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "veḳâlû in hâẕâ illâ siḥrum mübîn"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "eiẕâ mitnâ vekünnâ türâbev ve`iżâmen einnâ lemeb`ûŝûn"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "eveâbâüne-l'evvelûn"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "ḳul ne`am veentüm dâḫirûn"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "feinnemâ hiye zecratüv vâḥidetün feiẕâ hüm yenżurûn"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "veḳâlû yâ veylenâ hâẕâ yevmü-ddîn"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "hâẕâ yevmü-lfaṣli-lleẕî küntüm bihî tükeẕẕibûn"
        }
    ]
}