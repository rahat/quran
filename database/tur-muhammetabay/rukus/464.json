{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "keẕẕebet ŝemûdü binnüẕür"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "feḳâlû ebeşeram minnâ vâḥiden nettebi`uhû innâ iẕel lefî ḍalâliv vesü`ur"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "eülḳiye-ẕẕikru `aleyhi mim beyninâ bel hüve keẕẕâbün eşir"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "seya`lemûne gadem meni-lkeẕẕâbü-l'eşir"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "innâ mürsilü-nnâḳati fitnetel lehüm ferteḳibhüm vaṣṭabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "venebbi'hüm enne-lmâe ḳismetüm beynehüm. küllü şirbim muḥteḍar"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "fenâdev ṣâḥibehüm fete`âṭâ fe`aḳara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "fekeyfe kâne `aẕâbî venüẕür"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "innâ erselnâ `aleyhim ṣayḥatev vâḥideten fekânû keheşîmi-lmuḥteżir"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "keẕẕebet ḳavmü lûṭim binnüẕür"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "innâ erselnâ `aleyhim ḥâṣiben illâ âle lûṭ. necceynâhüm biseḥar"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "ni`metem min `indinâ. keẕâlike neczî men şekera"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "veleḳad enẕerahüm baṭşetenâ fetemârav binnüẕür"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "veleḳad râvedûhü `an ḍayfihî feṭamesnâ a`yünehüm feẕûḳû `aẕâbî venüẕür"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "veleḳad ṣabbeḥahüm bükraten `aẕâbüm müsteḳirr"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "feẕûḳû `aẕâbî venüẕür"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "veleḳad yesserne-lḳur'âne liẕẕikri fehel mim müddekir"
        }
    ]
}