{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "yâ eyyühe-lmüddeŝŝir"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "ḳum feenẕir"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "verabbeke fekebbir"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "veŝiyâbeke feṭahhir"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "verrucze fehcür"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "velâ temnün testekŝir"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "velirabbike faṣbir"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "feiẕâ nüḳira fi-nnâḳûr"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "feẕâlike yevmeiẕiy yevmün `asîr"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "ale-lkâfirîne gayru yesîr"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "ẕernî vemen ḫalaḳtü veḥîdâ"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "vece`altü lehû mâlem memdûdâ"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "vebenîne şühûdâ"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "vemehhettü lehû temhîdâ"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "ŝümme yaṭme`u en ezîd"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "kellâ. innehû kâne liâyâtinâ `anîdâ"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "seürhiḳuhû ṣa`ûdâ"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "innehû fekkera veḳaddera"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "feḳutile keyfe ḳaddera"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "ŝümme ḳutile keyfe ḳaddera"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "ŝümme neżara"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "ŝümme `abese vebesera"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "ŝümme edbera vestekbera"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "feḳâle in hâẕâ illâ siḥruy yü'ŝer"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "in hâẕâ illâ ḳavlü-lbeşer"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "seuṣlîhi seḳara"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "vemâ edrâke mâ seḳar"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "lâ tübḳî velâ teẕer"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "levvâḥatül lilbeşer"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "aleyhâ tis`ate `aşer"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "vemâ ce`alnâ aṣḥâbe-nnâri illâ melâikeh. vemâ ce`alnâ `iddetehüm illâ fitnetel lilleẕîne keferû liyesteyḳine-lleẕîne ûtü-lkitâbe veyezdâde-lleẕîne âmenû îmânev velâ yertâbe-lleẕîne ûtü-lkitâbe velmü'minûne veliyeḳûle-lleẕîne fî ḳulûbihim meraḍuv velkâfirûne mâẕâ erâde-llâhü bihâẕâ meŝelâ. keẕâlike yüḍillü-llâhü mey yeşâü veyehdî mey yeşâ'. vemâ ya`lemü cünûde rabbike illâ hû. vemâ hiye illâ ẕikrâ lilbeşer"
        }
    ]
}