{
    "maqras": [
        {
            "chapter": 38,
            "verse": 52,
            "text": "ve`indehüm ḳâṣirâtu-ṭṭarfi etrâb"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "hâẕâ mâ tû`adûne liyevmi-lḥisâb"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "inne hâẕâ lerizḳunâ mâ lehû min nefâd"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "hâẕâ. veinne liṭṭâgîne leşerra meâb"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "cehennem. yaṣlevnehâ. febi'se-lmihâd"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "hâẕâ felyeẕûḳûhü ḥamîmüv vegassâḳ"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "veâḫaru min şeklihî ezvâc"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "hâẕâ fevcüm muḳteḥimüm me`aküm. lâ merḥabem bihim. innehüm ṣâlü-nnâr"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "ḳâlû bel entüm. lâ merḥabem biküm. entüm ḳaddemtümûhü lenâ. febi'se-lḳarâr"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "ḳâlû rabbenâ men ḳaddeme lenâ hâẕâ fezidhü `aẕâben ḍi`fen fi-nnâr"
        },
        {
            "chapter": 38,
            "verse": 62,
            "text": "veḳâlû mâ lenâ lâ nerâ ricâlen künnâ ne`uddühüm mine-l'eşrâr"
        },
        {
            "chapter": 38,
            "verse": 63,
            "text": "etteḫaẕnâhüm siḫriyyen em zâgat `anhümü-l'ebṣâr"
        },
        {
            "chapter": 38,
            "verse": 64,
            "text": "inne ẕâlike leḥaḳḳun teḫâṣumü ehli-nnâr"
        },
        {
            "chapter": 38,
            "verse": 65,
            "text": "ḳul innemâ ene münẕir. vemâ min ilâhin ille-llâhü-lvâḥidü-lḳahhâr"
        },
        {
            "chapter": 38,
            "verse": 66,
            "text": "rabbü-ssemâvâti vel'arḍi vemâ beynehüme-l`azîzü-lgaffâr"
        },
        {
            "chapter": 38,
            "verse": 67,
            "text": "ḳul hüve nebeün `ażîm"
        },
        {
            "chapter": 38,
            "verse": 68,
            "text": "entüm `anhü mü`riḍûn"
        },
        {
            "chapter": 38,
            "verse": 69,
            "text": "mâ kâne liye min `ilmim bilmelei-l'a`lâ iẕ yaḫteṣimûn"
        },
        {
            "chapter": 38,
            "verse": 70,
            "text": "iy yûḥâ ileyye illâ ennemâ ene neẕîrum mübîn"
        },
        {
            "chapter": 38,
            "verse": 71,
            "text": "iẕ ḳâle rabbüke lilmelâiketi innî ḫâliḳum beşeram min ṭîn"
        },
        {
            "chapter": 38,
            "verse": 72,
            "text": "feiẕâ sevveytühû venefaḫtü fîhi mir rûḥî feḳa`û lehû sâcidîn"
        },
        {
            "chapter": 38,
            "verse": 73,
            "text": "fesecede-lmelâiketü küllühüm ecme`ûn"
        },
        {
            "chapter": 38,
            "verse": 74,
            "text": "illâ iblîs. istekbera vekâne mine-lkâfirîn"
        },
        {
            "chapter": 38,
            "verse": 75,
            "text": "ḳâle yâ iblîsü mâ mene`ake en tescüde limâ ḫalaḳtü biyedeyy. estekberte em künte mine-l`âlîn"
        },
        {
            "chapter": 38,
            "verse": 76,
            "text": "ḳâle ene ḫayrum minh. ḫalaḳtenî min nâriv veḫalaḳtehû min ṭîn"
        },
        {
            "chapter": 38,
            "verse": 77,
            "text": "ḳâle faḫruc minhâ feinneke racîm"
        },
        {
            "chapter": 38,
            "verse": 78,
            "text": "veinne `aleyke la`netî ilâ yevmi-ddîn"
        },
        {
            "chapter": 38,
            "verse": 79,
            "text": "ḳâle rabbi feenżirnî ilâ yevmi yüb`aŝûn"
        },
        {
            "chapter": 38,
            "verse": 80,
            "text": "ḳâle feinneke mine-lmünżarîn"
        },
        {
            "chapter": 38,
            "verse": 81,
            "text": "ilâ yevmi-lvaḳti-lma`lûm"
        },
        {
            "chapter": 38,
            "verse": 82,
            "text": "ḳâle febi`izzetike leugviyennehüm ecme`în"
        },
        {
            "chapter": 38,
            "verse": 83,
            "text": "illâ `ibâdeke minhümü-lmuḫleṣîn"
        },
        {
            "chapter": 38,
            "verse": 84,
            "text": "ḳâle felḥaḳḳ. velḥaḳḳa eḳûl"
        },
        {
            "chapter": 38,
            "verse": 85,
            "text": "leemleenne cehenneme minke vemimmen tebi`ake minhüm ecme`în"
        },
        {
            "chapter": 38,
            "verse": 86,
            "text": "ḳul mâ es'elüküm `aleyhi min ecriv vemâ ene mine-lmütekellifîn"
        },
        {
            "chapter": 38,
            "verse": 87,
            "text": "in hüve illâ ẕikrul lil`âlemîn"
        },
        {
            "chapter": 38,
            "verse": 88,
            "text": "veleta`lemünne nebeehû ba`de ḥîn"
        },
        {
            "chapter": 39,
            "verse": 1,
            "text": "tenzîlü-lkitâbi mine-llâhi-l`azîzi-lḥakîm"
        },
        {
            "chapter": 39,
            "verse": 2,
            "text": "innâ enzelnâ ileyke-lkitâbe bilḥaḳḳi fa`büdi-llâhe muḫliṣal lehü-ddîn"
        },
        {
            "chapter": 39,
            "verse": 3,
            "text": "elâ lillâhi-ddînü-lḫâliṣ. velleẕîne-tteḫaẕû min dûnihî evliyâ'. mâ na`büdühüm illâ liyüḳarribûnâ ile-llâhi zülfâ. inne-llâhe yaḥkümü beynehüm fî mâ hüm fîhi yaḫtelifûn. inne-llâhe lâ yehdî men hüve kâẕibün keffâr"
        },
        {
            "chapter": 39,
            "verse": 4,
            "text": "lev erâde-llâhü ey yetteḫiẕe veledel laṣṭafâ mimmâ yaḫlüḳu mâ yeşâü sübḥâneh. hüve-llâhü-lvâḥidü-lḳahhâr"
        },
        {
            "chapter": 39,
            "verse": 5,
            "text": "ḫaleḳa-ssemâvâti vel'arḍa bilḥaḳḳ. yükevviru-lleyle `ale-nnehâri veyükevviru-nnehâra `ale-lleyli veseḫḫara-şşemse velḳamer. küllüy yecrî liecelim müsemmâ. elâ hüve-l`azîzü-lgaffâr"
        },
        {
            "chapter": 39,
            "verse": 6,
            "text": "ḫaleḳaküm min nefsiv vâḥidetin ŝümme ce`ale minhâ zevcehâ veenzele leküm mine-l'en`âmi ŝemâniyete ezvâc. yaḫlüḳuküm fî büṭûni ümmehâtiküm ḫalḳam mim ba`di ḫalḳin fî żulümâtin ŝelâŝ. ẕâlikümü-llâhü rabbüküm lehü-lmülk. lâ ilâhe illâ hû. feennâ tuṣrafûn"
        },
        {
            "chapter": 39,
            "verse": 7,
            "text": "in tekfürû feinne-llâhe ganiyyün `anküm velâ yerḍâ li`ibâdihi-lküfr. vein teşkürû yerḍahü leküm. velâ teziru vâziratüv vizra uḫrâ. ŝümme ilâ rabbiküm merci`uküm feyünebbiüküm bimâ küntüm ta`melûn. innehû `alîmüm biẕâti-ṣṣudûr"
        }
    ]
}