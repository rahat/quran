{
    "maqras": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "uḥşürü-lleẕîne żalemû veezvâcehüm vemâ kânû ya`büdûn"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "min dûni-llâhi fehdûhüm ilâ ṣirâṭi-lceḥîm"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "veḳifûhüm innehüm mes'ûlûn"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "mâ leküm lâ tenâṣarûn"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "bel hümü-lyevme müsteslimûn"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "veaḳbele ba`ḍuhüm `alâ ba`ḍiy yetesâelûn"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "ḳâlû inneküm küntüm te'tûnenâ `ani-lyemîn"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "ḳâlû bel lem tekûnû mü'minîn"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "vemâ kâne lenâ `aleyküm min sülṭân. bel küntüm ḳavmen ṭâgîn"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "feḥaḳḳa `aleynâ ḳavlü rabbinâ. innâ leẕâiḳûn"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "feagveynâküm innâ künnâ gâvîn"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "feinnehüm yevmeiẕin fi-l`aẕâbi müşterikûn"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "innâ keẕâlike nef`alü bilmücrimîn"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "innehüm kânû iẕâ ḳîle lehüm lâ ilâhe ille-llâhü yestekbirûn"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "veyeḳûlûne einnâ letârikû âlihetinâ lişâ`irim mecnûn"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "bel câe bilḥaḳḳi veṣaddeḳa-lmürselîn"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "inneküm leẕâiḳu-l`aẕâbi-l'elîm"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "vemâ tüczevne illâ mâ küntüm ta`melûn"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "illâ `ibâde-llâhi-lmuḫleṣîn"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "ülâike lehüm rizḳum ma`lûm"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "fevâkih. vehüm mükramûn"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "fî cennâti-nne`îm"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "alâ sürurim müteḳâbilîn"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "yüṭâfü `aleyhim bike'sim mim me`în"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "beyḍâe leẕẕetil lişşâribîn"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "lâ fîhâ gavlüv velâ hüm `anhâ yünzefûn"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "ve`indehüm ḳâṣirâtu-ṭṭarfi `în"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "keennehünne beyḍum meknûn"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "feaḳbele ba`ḍuhüm `alâ ba`ḍiy yetesâelûn"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "ḳâle ḳâilüm minhüm innî kâne lî ḳarîn"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "yeḳûlü einneke lemine-lmüṣaddiḳîn"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "eiẕâ mitnâ vekünnâ türâbev ve`iżâmen einnâ lemedînûn"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "ḳâle hel entüm müṭṭali`ûn"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "feṭṭale`a feraâhü fî sevâi-lceḥîm"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "ḳâle tellâhi in kitte letürdîn"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "velevlâ ni`metü rabbî leküntü mine-lmuḥḍarîn"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "efemâ naḥnü bimeyyitîn"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "illâ mevtetene-l'ûlâ vemâ naḥnü bimü`aẕẕebîn"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "inne hâẕâ lehüve-lfevzü-l`ażîm"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "limiŝli hâẕâ felya`meli-l`âmilûn"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "eẕâlike ḫayrun nüzülen em şeceratü-zzeḳḳûm"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "innâ ce`alnâhâ fitnetel liżżâlimîn"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "innehâ şeceratün taḫrucü fî aṣli-lceḥîm"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "ṭal`uhâ keennehû ruûsü-şşeyâṭîn"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "feinnehüm leâkilûne minhâ femâliûne minhe-lbüṭûn"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ŝümme inne lehüm `aleyhâ leşevbem min ḥamîm"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ŝümme inne merci`ahüm leile-lceḥîm"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "innehüm elfev âbâehüm ḍâllîn"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "fehüm `alâ âŝârihim yühra`ûn"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "veleḳad ḍalle ḳablehüm ekŝeru-l'evvelîn"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "veleḳad erselnâ fîhim münẕirîn"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "fenżur keyfe kâne `âḳibetü-lmünẕerîn"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "illâ `ibâde-llâhi-lmuḫleṣîn"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "veleḳad nâdânâ nûḥun feleni`me-lmücîbûn"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "venecceynâhü veehlehû mine-lkerbi-l`ażîm"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "vece`alnâ ẕürriyyetehû hümü-lbâḳîn"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "veteraknâ `aleyhi fi-l'âḫirîn"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "selâmün `alâ nûḥin fi-l`âlemîn"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "innâ keẕâlike neczi-lmuḥsinîn"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "innehû min `ibâdine-lmü'minîn"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ŝümme agraḳne-l'âḫarîn"
        }
    ]
}