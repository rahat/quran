{
    "maqras": [
        {
            "chapter": 50,
            "verse": 27,
            "text": "ḳâle ḳarînühû rabbenâ mâ aṭgaytühû velâkin kâne fî ḍalâlim be`îd"
        },
        {
            "chapter": 50,
            "verse": 28,
            "text": "ḳâle lâ taḫteṣimû ledeyye veḳad ḳaddemtü ileyküm bilve`îd"
        },
        {
            "chapter": 50,
            "verse": 29,
            "text": "mâ yübeddelü-lḳavlü ledeyye vemâ ene biżallâmil lil`abîd"
        },
        {
            "chapter": 50,
            "verse": 30,
            "text": "yevme neḳûlü licehenneme heli-mtele'ti veteḳûlü hel mim mezîd"
        },
        {
            "chapter": 50,
            "verse": 31,
            "text": "veüzlifeti-lcennetü lilmütteḳîne gayra be`îd"
        },
        {
            "chapter": 50,
            "verse": 32,
            "text": "hâẕâ mâ tû`adûne likülli evvâbin ḥafîż"
        },
        {
            "chapter": 50,
            "verse": 33,
            "text": "men ḫaşiye-rraḥmâne bilgaybi vecâe biḳalbim münîb"
        },
        {
            "chapter": 50,
            "verse": 34,
            "text": "üdḫulûhâ biselâm. ẕâlike yevmü-lḫulûd"
        },
        {
            "chapter": 50,
            "verse": 35,
            "text": "lehüm mâ yeşâûne fîhâ veledeynâ mezîd"
        },
        {
            "chapter": 50,
            "verse": 36,
            "text": "vekem ehleknâ ḳablehüm min ḳarnin hüm eşeddü minhüm baṭşen feneḳḳabû fi-lbilâd. hel mim meḥîṣ"
        },
        {
            "chapter": 50,
            "verse": 37,
            "text": "inne fî ẕâlike leẕikrâ limen kâne lehû ḳalbün ev elḳa-ssem`a vehüve şehîd"
        },
        {
            "chapter": 50,
            "verse": 38,
            "text": "veleḳad ḫalaḳne-ssemâvâti vel'arḍa vemâ beynehümâ fî sitteti eyyâm. vemâ messenâ mil lügûb"
        },
        {
            "chapter": 50,
            "verse": 39,
            "text": "faṣbir `alâ mâ yeḳûlûne vesebbiḥ biḥamdi rabbike ḳable ṭulû`i-şşemsi veḳable-lgurûb"
        },
        {
            "chapter": 50,
            "verse": 40,
            "text": "vemine-lleyli fesebbiḥhü veedbâra-ssücûd"
        },
        {
            "chapter": 50,
            "verse": 41,
            "text": "vestemi` yevme yünâdi-lmünâdi mim mekânin ḳarîb"
        },
        {
            "chapter": 50,
            "verse": 42,
            "text": "yevme yesme`ûne-ṣṣayḥate bilḥaḳḳ. ẕâlike yevmü-lḫurûc"
        },
        {
            "chapter": 50,
            "verse": 43,
            "text": "innâ naḥnü nuḥyî venümîtü veileyne-lmeṣîr"
        },
        {
            "chapter": 50,
            "verse": 44,
            "text": "yevme teşeḳḳaḳu-l'arḍu `anhüm sirâ`â. ẕâlike ḥaşrun `aleynâ yesîr"
        },
        {
            "chapter": 50,
            "verse": 45,
            "text": "naḥnü a`lemü bimâ yeḳûlûne vemâ ente `aleyhim bicebbârin feẕekkir bilḳur'âni mey yeḫâfü ve`îd"
        },
        {
            "chapter": 51,
            "verse": 1,
            "text": "veẕẕâriyâti ẕervâ"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "felḥâmilâti viḳrâ"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "felcâriyâti yüsrâ"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "felmüḳassimâti emrâ"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "innemâ tû`adûne leṣâdiḳ"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "veinne-ddîne levâḳi"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "vessemâi ẕâti-lḥubük"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "inneküm lefî ḳavlim muḫtelif"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "yü'fekü `anhü men üfik"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "ḳutile-lḫarrâṣûn"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "elleẕîne hüm fî gamratin sâhûn"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "yes'elûne eyyâne yevmü-ddîn"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "yevme hüm `ale-nnâri yüftenûn"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ẕûḳû fitneteküm. hâẕe-lleẕî küntüm bihî testa`cilûn"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "inne-lmütteḳîne fî cennâtiv ve`uyûn"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "âḫiẕîne mâ âtâhüm rabbühüm. innehüm kânû ḳable ẕâlike muḥsinîn"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "kânû ḳalîlem mine-lleyli mâ yehce`ûn"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "vebil'esḥâri hüm yestagfirûn"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "vefî emvâlihim ḥaḳḳul lissâili velmaḥrûm"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "vefi-l'arḍi âyâtül lilmûḳinîn"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "vefî enfüsiküm. efelâ tübṣirûn"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "vefi-ssemâi rizḳuküm vemâ tû`adûn"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "feverabbi-ssemâi vel'arḍi innehû leḥaḳḳum miŝle mâ enneküm tenṭiḳûn"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "hel etâke ḥadîŝü ḍayfi ibrâhîme-lmükramîn"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "iẕ deḫalû `aleyhi feḳâlû selâmâ. ḳâle selâm. ḳavmüm münkerûn"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "ferâga ilâ ehlihî fecâe bi`iclin semîn"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "feḳarrabehû ileyhim ḳâle elâ te'külûn"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "feevcese minhüm ḫîfeh. ḳâlû lâ teḫaf. vebeşşerûhü bigulâmin `alîm"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "feaḳbeleti-mraetühû fî ṣarratin feṣakket vechehâ veḳâlet `acûzün `aḳîm"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "ḳâlû keẕâliki ḳâle rabbük. innehû hüve-lḥakîmü-l`alîm"
        }
    ]
}