{
    "maqras": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "fenebeẕnâhü bil`arâi vehüve seḳîm"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "veembetnâ `aleyhi şeceratem miy yaḳṭîn"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "veerselnâhü ilâ mieti elfin ev yezîdûn"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "feâmenû femetta`nâhüm ilâ ḥîn"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "festeftihim elirabbike-lbenâtü velehümü-lbenûn"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "em ḫalaḳne-lmelâikete inâŝev vehüm şâhidûn"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "elâ innehüm min ifkihim leyeḳûlûn"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "velede-llâhü veinnehüm lekâẕibûn"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "aṣṭafe-lbenâti `ale-lbenîn"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "mâ leküm. keyfe taḥkümûn"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "efelâ teẕekkerûn"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "em leküm sülṭânüm mübîn"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "fe'tû bikitâbiküm in küntüm ṣâdiḳîn"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "vece`alû beynehû vebeyne-lcinneti nesebâ. veleḳad `alimeti-lcinnetü innehüm lemuḥḍarûn"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "sübḥâne-llâhi `ammâ yeṣifûn"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "illâ `ibâde-llâhi-lmuḫleṣîn"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "feinneküm vemâ ta`büdûn"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "mâ entüm `aleyhi bifâtinîn"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "illâ men hüve ṣâli-lceḥîm"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "vemâ minnâ illâ lehû meḳâmüm ma`lûm"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "veinnâ lenaḥnu-ṣṣâffûn"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "veinnâ lenaḥnü-lmüsebbiḥûn"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "vein kânû leyeḳûlûn"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "lev enne `indenâ ẕikram mine-l'evvelîn"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "lekünnâ `ibâde-llâhi-lmuḫleṣîn"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "fekeferû bih. fesevfe ya`lemûn"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "veleḳad sebeḳat kelimetünâ li`ibâdine-lmürselîn"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "innehüm lehümü-lmenṣûrûn"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "veinne cündenâ lehümü-lgâlibûn"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "fetevelle `anhüm ḥattâ ḥîn"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "veebṣirhüm fesevfe yübṣirûn"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "efebi`aẕâbinâ yesta`cilûn"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "feiẕâ nezele bisâḥatihim fesâe ṣabâḥu-lmünẕerîn"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "vetevelle `anhüm ḥattâ ḥîn"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "veebṣir fesevfe yübṣirûn"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "sübḥâne rabbike rabbi-l`izzeti `ammâ yeṣifûn"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "veselâmün `ale-lmürselîn"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "velḥamdü lillâhi rabbi-l`âlemîn"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "ṣâd. velḳur'âni ẕi-ẕẕikr"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "beli-lleẕîne keferû fî `izzetiv veşiḳâḳ"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "kem ehleknâ min ḳablihim min ḳarnin fenâdev velâte ḥîne menâṣ"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "ve`acibû en câehüm münẕirum minhüm. veḳâle-lkâfirûne hâẕâ sâḥirun keẕẕâb"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "ece`ale-l'âlihete ilâhev vâḥidâ. inne hâẕâ leşey'ün `ucâb"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "venṭaleḳa-lmeleü minhüm eni-mşû vaṣbirû `alâ âlihetiküm. inne hâẕâ leşey'üy yürâd"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "mâ semi`nâ bihâẕâ fi-lmilleti-l'âḫirah. in hâẕâ ille-ḫtilâḳ"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "eünzile `aleyhi-ẕẕikru mim beyninâ. bel hüm fî şekkim min ẕikrî. bel lemmâ yeẕûḳû `aẕâb"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "em `indehüm ḫazâinü raḥmeti rabbike-l`azîzi-lvehhâb"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "em lehüm mülkü-ssemâvâti vel'arḍi vemâ beynehümâ. felyerteḳû fi-l'esbâb"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "cündüm mâ hünâlike mehzûmüm mine-l'aḥzâb"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "keẕẕebet ḳablehüm ḳavmü nûḥiv ve`âdüv vefir`avnü ẕü-l'evtâd"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "veŝemûdü veḳavmü lûṭiv veaṣḥâbü-l'eykeh. ülâike-l'aḥzâb"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "in küllün illâ keẕẕebe-rrusüle feḥaḳḳa `iḳâb"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "vemâ yenżuru hâülâi illâ ṣayḥatev vâḥidetem mâ lehâ min fevâḳ"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "veḳâlû rabbenâ `accil lenâ ḳiṭṭanâ ḳable yevmi-lḥisâb"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "iṣbir `alâ mâ yeḳûlûne veẕkür `abdenâ dâvûde ẕe-l'eyd. innehû evvâb"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "innâ seḫḫarne-lcibâle me`ahû yüsebbiḥne bil`aşiyyi vel'işrâḳ"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "veṭṭayra maḥşûrah. küllül lehû evvâb"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "veşedednâ mülkehû veâteynâhü-lḥikmete vefaṣle-lḫiṭâb"
        }
    ]
}