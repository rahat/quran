    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Non ti abbiamo forse aperto il petto [alla fede]"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "E non ti abbiamo sbarazzato del fardello"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "che gravava sulle tue spalle"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "[Non abbiamo] innalzato la tua fama"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "In verità per ogni difficoltà c'è una facilità"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Sì, per ogni difficoltà c'è una facilità"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Appena ne hai il tempo, mettiti dunque ritto"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "e aspira al tuo Signore"
        }
    ]
