{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "ترش رو ہوا، اور بے رخی برتی"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "اِس بات پر کہ وہ اندھا اُس کے پاس آ گیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "تمہیں کیا خبر، شاید وہ سدھر جائے"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا نصیحت پر دھیان دے، اور نصیحت کرنا اس کے لیے نافع ہو؟"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "جو شخص بے پروائی برتتا ہے"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "اس کی طرف تو تم توجہ کرتے ہو"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حالانکہ اگر وہ نہ سدھرے تو تم پر اس کی کیا ذمہ داری ہے؟"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اور جو خود تمہارے پاس دوڑا آتا ہے"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور وہ ڈر رہا ہوتا ہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "اس سے تم بے رخی برتتے ہو"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "ہرگز نہیں، یہ تو ایک نصیحت ہے"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "جس کا جی چاہے اِسے قبول کرے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "یہ ایسے صحیفوں میں درج ہے جو مکرم ہیں"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلند مرتبہ ہیں، پاکیزہ ہیں"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "معزز اور نیک کاتبوں کے"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "ہاتھوں میں رہتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "لعنت ہو انسان پر، کیسا سخت منکر حق ہے یہ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "کس چیز سے اللہ نے اِسے پیدا کیا ہے؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "نطفہ کی ایک بوند سے اللہ نے اِسے پیدا کیا، پھر اِس کی تقدیر مقرر کی"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھر اِس کے لیے زندگی کی راہ آسان کی"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اِسے موت دی اور قبر میں پہنچایا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہے وہ اِسے دوبارہ اٹھا کھڑا کرے"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ہرگز نہیں، اِس نے وہ فرض ادا نہیں کیا جس کا اللہ نے اِسے حکم دیا تھا"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پھر ذرا انسان اپنی خوراک کو دیکھے"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "ہم نے خوب پانی لنڈھایا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر زمین کو عجیب طرح پھاڑا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر اُس کے اندر اگائے غلے"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اور انگور اور ترکاریاں"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجوریں"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گھنے باغ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور طرح طرح کے پھل، اور چارے"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تمہارے لیے اور تمہارے مویشیوں کے لیے سامان زیست کے طور پر"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "آخرکار جب وہ کان بہرے کر دینے والی آواز بلند ہوگی"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "اُس روز آدمی اپنے بھائی"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور اپنی ماں اور اپنے باپ"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور اپنی بیوی اور اپنی اولاد سے بھاگے گا"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "ان میں سے ہر شخص پر اس دن ایسا وقت آ پڑے گا کہ اسے اپنے سوا کسی کا ہوش نہ ہوگا"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "کچھ چہرے اُس روز دمک رہے ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ہشاش بشاش اور خوش و خرم ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور کچھ چہروں پر اس روز خاک اڑ رہی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "اور کلونس چھائی ہوئی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "یہی کافر و فاجر لوگ ہوں گے"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج لپیٹ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "اور جب تارے بکھر جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب دس مہینے کی حاملہ اونٹنیاں اپنے حال پر چھوڑ دی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب جنگلی جانور سمیٹ کر اکٹھے کر دیے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب سمندر بھڑکا دیے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب جانیں (جسموں سے) جوڑ دی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زندہ گاڑی ہوئی لڑکی سے پوچھا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ وہ کس قصور میں ماری گئی؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب اعمال نامے کھولے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کا پردہ ہٹا دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب جہنم دہکائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب جنت قریب لے آئی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "اُس وقت ہر شخص کو معلوم ہو جائے گا کہ وہ کیا لے کر آیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس نہیں، میں قسم کھاتا ہوں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "پلٹنے اور چھپ جانے والے تاروں کی"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی جبکہ وہ رخصت ہوئی"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی جبکہ اس نے سانس لیا"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "یہ فی الواقع ایک بزرگ پیغام بر کا قول ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو بڑی توانائی رکھتا ہے، عرش والے کے ہاں بلند مرتبہ ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "وہاں اُس کا حکم مانا جاتا ہے، وہ با اعتماد ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور (اے اہل مکہ) تمہارا رفیق مجنون نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اُس نے اُس پیغام بر کو روشن افق پر دیکھا ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ غیب (کے اِس علم کو لوگوں تک پہنچانے) کے معاملے میں بخیل نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ کسی شیطان مردود کا قول نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم لوگ کدھر چلے جا رہے ہو؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو سارے جہان والوں کے لیے ایک نصیحت ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "تم میں سے ہر اُس شخص کے لیے جو راہ راست پر چلنا چاہتا ہو"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تمہارے چاہنے سے کچھ نہیں ہوتا جب تک اللہ رب العالمین نہ چاہے"
        }
    ]
}