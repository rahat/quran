{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gokyuzu catladıgında"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "yıldızlar dokuldugunde"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler (yarılıp) akıtıldıgında"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kabirler desildiginde"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "bir nefis (herkes) onden neyi gonderdigini ve neyi bıraktıgını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, o lutfu bol olan Rabbine karsı ne aldattı seni"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, seni yarattı, duzenine koydu ve dengeli kıldı"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni diledigi herhangi bir bicimde olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, hayır, dogrusu siz dini yalanlıyor, cezaya inanmıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki, uzerinizde gozculer var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli, durust katipler"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Her ne yaparsanız biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Suphesiz ki, iyiler Naim (Cenneti) icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ve suphesiz kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gununde ona yaslanacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ondan cıkacak da degillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sen bildin mi nedir din gunu"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, sen bildin mi nedir din gunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun ki, kimse, kimse icin hicbir yardım yapma gucune sahip olamaz ve o gun buyruk yalnız Allah´ındır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Veyl olcu ve tartıda hile yapanlara"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Onlar ki, insanlar uzerinden kendilerine olctuklerinde tam basarlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Onlara olctukleri veya tarttıklarında ise eksiltirler"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, tekrar diriltileceklerini zannetmiyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "O buyuk gun icin"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Insanların, alemlerin Rabbi icin kalkacagı gunde"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Hayır, hayır, facirlerin yazısı Siccin´dedir"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Bildin mi Siccin nedir"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Yazılmıs bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "Veyl o gun yalan diyenlere"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "O ceza gununu yalanlayanlara"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Onu ancak her bir haddini askın, gunaha duskun yalanlar"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Karsısında ayetlerimiz okundugunda: «Eskilerin masalları!» dedi"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Hayır, hayır! Onların kazancları kalplerinin uzerine pas baglamıstır"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Hayır, hayır, dogrusu onlar o gun Rablerini gormekten mahrum kalacaklardır"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Sonra onlar, mutlaka cehenneme yaslanacak"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Sonra da onlara: «Iste bu, sizin yalanlayıp durdugunuz!» denilecek"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Hayır, hayır; cunku iyilerin yazısı Illiyyun´dadır"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "Bildin mi nedir Illiyyun"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "O yazılmıs bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Yakın melekler ona sahit olurlar"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Haberiniz olsun ki, iyiler bir naim (cenneti) icindedirler"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Koltuklar uzerinde (etrafı) seyrederler"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Yuzlerinde nimet ve mutlulugun parıltısını tanırsın"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Onlara muhurlenmis halis bir ickiden sunulur"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Onun sonu misktir, iste ona imrensin artık imrenenler"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Onun karısımı Tesnim´dendir"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "(Allah´a) yakın olanların icecegi bir cesmeden"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Evet, o gunah isleyenler, iman edenlere guluyorlardı"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Onlara ugradıklarında birbirlerine goz kırpıyorlardı"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Evlerine dondukleri zaman zevklenerek donuyorlardı"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Inananları gorduklerinde: «Iste bunlar sapıklar!» diyorlardı"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Halbuki inananların uzerlerine gozcu olarak gonderilmemislerdi"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Iste bugun de inananlar, kafirlere gulecekler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Koltuklar uzerinde bakacaklar (kendileriyle eglenen kafirlerin cehenneme nasıl yaslandıklarını seyredecekler)"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Nasıl, kafirler ettiklerinin cezasını buldular mı"
        }
    ]
}