{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "ve Rabbini dinleyip haklandıgında"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "yer uzatılıp dumduz edildiginde"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "ve icindekileri dısa atıp tamamen bosaldıgında"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "ve Rabbini dinleyip haklandıgında"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "ey insan, sen gercekten Rabbine dogru caba ustune caba gosterir, sonra da O´na varırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kitabı sag eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "kolay bir hesaba tabi tutulur"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "ve ailesine sevincli olarak doner"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Helak diye cagırır"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "ve alevli atese yaslanır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, ailesi icinde sevincliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Cunku o, hic inkılap gormeyecek (bu durumunun asla degismeyecegini) sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, cunku Rabbi, onu gozetiyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Simdi yemin ederim, o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "geceye ve derledigine"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "ve derlendiginde (dolunay haline geldiginde) o aya ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "sizler binip binip tabakadan tabakaya (halden hale) gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "O halde onlara ne oluyor ki, iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsılarında Kur´an okundugu zaman secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Hatta o kufredenler yalan derler"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, iclerindekini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun icin onlara acı bir azap mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi isler yapanlar baska; onlara tukenmez bir mukafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "O burclara sahip gok yuzune"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "o va´dolunan gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "o sahitlik edecek ve sahitlik edilecek olana yemin olsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "o hendek sahiplerine la´net edildi"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O cıralı ates sahiplerine"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "O zaman ki, cevresinde oturmuslardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Muminlere yaptıklarını bizzat seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlara sadece guclu ve ovguye layık Allah´a iman etmeleri yuzunden kızıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O ki, goklerin ve yerin hukumranlıgı yalnız O´nundur ve Allah, herseye sahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Inanan erkeklere ve inanan kadınlara eziyet edip de sonra tevbe etmeyenlere kesinlikle cehennem azabı vardır ve de yangın azabı"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Iman edip iyi isler yapanlara ise muhakkak altından ırmaklar akan cennetler vardır, iste o buyuk kurtulus odur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Gercekten Rabbinin tutusu cok siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Cunku yoktan var eden de, tekrar dirilten de odur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bununla beraber, cok bagıslayıcıdır, sevgi doludur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars´ın sahibidir, sanı yucedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların kıssası sana geldi ya"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun´un ve Semud´un kıssası"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Fakat o kufredenler hala bir yalanlama icindeler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Oysa Allah, onları arkalarından kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Fakat o, sanlı bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o gokyuzune ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Bildin mi Tarık nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O karanlıgı delen (parlak) yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hicbir kimse yoktur ki, uzerinde bir gozetleyici olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun icin insan bir dusunsun neden yaratıldıgını"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Bir atılgan sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Ki, arka kemigi ile gogus kemikleri arasından cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette O, onu dondurmege kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Butun sırların yoklanacagı gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "o zaman ne bir gucu vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o donuslu goge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ki, o her halde keskin bir hukumdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, onlar hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine kası hile kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun icin o kafirlere muhlet ver, biraz daha sure tanı onlara"
        }
    ]
}