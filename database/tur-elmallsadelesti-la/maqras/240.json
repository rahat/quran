{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmiyor mu ki, kabirdekiler desildigi zaman"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "o goguslerdekiler derlendiginde"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "O gun, Rableri onlardan elbette haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "O apacık bela (Kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o carpacak bela"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O carpacak belanın ne oldugunu ne bildirdi ki sana"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar cırpınıp yayılan pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da didilmis renkli yunler gibi atılacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste o zaman tartıları agır basan kimse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık hosnut olacagı bir hayat icindedir o"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat tartıları hafif gelen kimse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "O vakit onun anası Haviyedir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ve bildin mi, Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızısmıs bir atestir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "O cokluk kuruntusu sizleri oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "ta kabirlere kadar gidip ziyaret edisinize kadar"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Oyle degil, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Sonra yine oyle degil, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Oyle degil, kesin olarak bilseniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "andolsun ki, cehennemi mutlaka goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra yine andolsun ki, onu yakın gozuyle goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra andolsun ki, o gun her nimetten sorgulanacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun Asr´a ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "insan mutlaka bir ziyandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edip iyi isler yapanlar, birbirlerine hep hakkı tavsiye edenler ve sabrı tavsiyelesenler baska"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Veyl o insanları cekistirip kas goz isaretleriyle alay edenlerin butunune"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "ve bir mal toplayıp hep onu sayana"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Sanır ki, malı kendisini ebedilestirmistir"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, andolsun ki, o Hutame´ye (cehenneme) atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Bildin mi Hutame nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın, tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "ki, gonullerin ta ustune cıkar"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O (ates), onların ustune kapatılacaktır mutlaka"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "uzatılmıs sutunlar icinde olarak"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Gormedin mi Rabbin ne yaptı fil sahiplerine"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Tuzaklarını bosa cıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Uzerlerine suru suru kuslar saldı"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara balcıktan pisirilmis sert taslar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Derken onları, yenilmis ekin yapragı gibi kılıverdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys´e imkan saglandıgı icin"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "kısın ve yazın yolculuk etme imkanı saglandıgı icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "hic olmazsa onun icin bu Beyt´in (Kabe´nin) Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Ki kendilerini aclıktan doyurdu ve onları korkudan emin kıldı"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gordun mu o dine yalan diyeni"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste yetimi itip kakan odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya tesvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Fakat veyl o namaz kılanlara ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "namazlarında yanılmaktadırlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar ki, gosteris yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardımlıgı sakınır (zekatı yemezler)"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Muhakkak Biz, sana Kevseri´i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Sen de Rabbin icin namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Dogrusu sana kin besleyendir soyu kesik olan"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: «Ey kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "tapmam o taptıklarınıza"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim kulluk ettigime tapanlardan degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Hem ben tapıcı degilim sizin taptıklarınıza"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "hem de siz, benim kulluk ettigime tapıcılardan degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Size dininiz, bana dinim (sizin dininiz size, benim dinim bana)"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah´ın yardımı ve fetih geldiginde"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "insanları boluk, boluk Allah´ın dinine girerlerken gordugunde"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "artık Rabbini hamd ile tesbih et ve bagıslamasını dile! Muhakkak ki, O, cok bagıslayandır"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb´in iki eline yuh oldu, kendine de yuh"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ona ne malı fayda verdi, ne de kazandıgı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, bir alevli atese yaslanacak"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da odun hamalı olacak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Gerdanında fitillisinden bir ip oldugu halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: «O Allah tek birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah, o eksiksiz, Samed´dir (Her sey O´na muhtactır)"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Dogurmadı ve dogurulmadı"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "O´na bir kufuv (denk) de olmadı!»"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: «Sıgınırım o sabahın Rabbine"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlıgı cokup bastırdıgında bir gecenin serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "o dugumlere ufleyen ufurukculerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ve kıskanclık gosterdiginde bir kıskancın serrinden!»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: «Sıgınırım insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "insanların hukumdarına"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "insanların Ilahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "o sinsi vesvesecinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "ki, insanların sinelerine vesvese verir durur"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerekse insanlardan (olsun).»"
        }
    ]
}