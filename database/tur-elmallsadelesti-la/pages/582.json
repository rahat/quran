        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, ileride bilecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Hayır, hayır, ileride bilecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz, yeryuzunu bir dosek yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık (yapmadık mı)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizleri cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu bir gecim vakti yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuze yedi saglam bina (gok) cattık"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Iclerine parıl parıl parlayan bir kandil astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "O yogun bulutlardan sarıl sarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler ve otlar cıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve sarmas dolas baglar bahceler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Suphesiz ki, o fasıl (kıyamet) gunu belirlenmis bir vakit olmustur"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a ufuruldugu gun, boluk boluk gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gok de acılmıs, kapılar olusmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulmus, bir serap olmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Suphesiz, cehennem bir gozetleme yeri olmustur"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlara bir barınak olmustur"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Icinde devirlerce kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne bir serinlik tadacaklar, ne de bir icecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Yalnızca bir kaynar su ve irin"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına tamamen uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar, hicbir hesap ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimize yalan diye diye tam bir yalancı olmuslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz ise her seyi sayıp bir kitaba gecirmisiz"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Artık tadın! Artık, azabınızı artırmaktan baska birsey yapacak degiliz"
        }
