{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer o sarsıntıyla sarsıldıgında"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "yer agırlıklarını cıkardıgında"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insan: «Buna ne oluyor?» dediginde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "o gun, (yer) butun haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, amellerinin kendilerine gosterilmesi icin bolukler halinde fırlayıp cıkacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Her kim zerre kadar bir hayır isterse onu gorecek"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "her kim de zerre kadar bir kotuluk islerse onu gorecektir"
        }
    ]
}