{
    "rukus": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "ve Rabbini dinleyip haklandıgında"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "yer uzatılıp dumduz edildiginde"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "ve icindekileri dısa atıp tamamen bosaldıgında"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "ve Rabbini dinleyip haklandıgında"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "ey insan, sen gercekten Rabbine dogru caba ustune caba gosterir, sonra da O´na varırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kitabı sag eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "kolay bir hesaba tabi tutulur"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "ve ailesine sevincli olarak doner"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Helak diye cagırır"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "ve alevli atese yaslanır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, ailesi icinde sevincliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Cunku o, hic inkılap gormeyecek (bu durumunun asla degismeyecegini) sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, cunku Rabbi, onu gozetiyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Simdi yemin ederim, o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "geceye ve derledigine"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "ve derlendiginde (dolunay haline geldiginde) o aya ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "sizler binip binip tabakadan tabakaya (halden hale) gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "O halde onlara ne oluyor ki, iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsılarında Kur´an okundugu zaman secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Hatta o kufredenler yalan derler"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, iclerindekini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun icin onlara acı bir azap mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi isler yapanlar baska; onlara tukenmez bir mukafat vardır"
        }
    ]
}