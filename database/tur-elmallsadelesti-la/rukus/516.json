{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun iyilik yapılması icin (o birbiri ardınca) gonderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "bukup devirenlere"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "nesrederek yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "(gercek ile batılı) secip ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "sonra bir ogut bırakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "gerek mazur kılmak gerekse uyarmak icin olsun"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "elbette size va´d olunan sey muhakkak meydana gelecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Hani o yıldızlar silindigi vakit"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "o gok kubbe acıldıgı vakit"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "daglar savruldugu vakit"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "peygamberler bekleme yerlerine vardırıldıgı vakit (kıyamet gunu)"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "bunlar hangi gune ertelenmistir"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Ayırım gunune"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ayırım gununun ne oldugunu bilir misin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Onceki toplulukları helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra arkalarına takacagız geridekileri"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Biz sucluları oyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Yaratmadık mı sizi hor bir sudan"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu guvenli bir yere (rahme) koyduk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belirli bir vakte degin"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Demek ki olcmusuz, demek ki Biz ne guzel gucluleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryuzunu bir tokat (toplanma yeri) yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Gerek diriler gerekse oluler icin"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve orada, oturaklı yumru yumru daglar oturtup size tatlı su sunmadık mı"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi bosalıp (gidin) o yalan dediginize"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "haydi bosalın (gidin) bir uc catallı (uc kola ayrılmıs) golgeye"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "ne golgelendirir, ne de alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Cunku o oyle kıvılcımlar atar ki, her biri bir saray gibi"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki sarı hopalar (erkek develer) gibi"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugun onların nutukları tutulacagı gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Izin de verilmez ki, ozur dileyeler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gun yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Iste bu o ayırt etme gunudur; topladık sizi ve oncekileri"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir fenniniz (careniz) varsa beni atlatın"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gun yalan diyenlerin vay haline"
        }
    ]
}