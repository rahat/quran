{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun, o daldırıp cıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "usulcacık cekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "yuzup yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "yarısıp gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "ve bir is cevirenlere ki"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "o gun sarsıntı sarsacak"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Onu ikincisi izleyecek"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun yurekler oynar kaygıdan"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozler kalkmaz saygıdan"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz gercekten eski halimize dondurulecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ya, ufalanmıs kemikler olduktan sonra ha?»"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Dediler ki: «Oyleyse o zararlı bir donus!»"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Fakat o zorlu bir kumandadır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "bir de bakarsın uyanmıslar, hepsi meydanda"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Sana o Musa´nın haberi geldi ya"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona o mukaddes vadi Tuva´da seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Haydi git Firavun´a, cunku o pek azıttı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: «Ister misin temizlenesin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Sana Rabbini tanıtayım da ona saygı duyasın?»"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Vardı ona, o buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o, yalan dedi ve isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra kosarak ters yone gitti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken toplayıp bagırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Benim en buyuk Rabbiniz! dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu tuttu, sonuna ve onune (ahirette ve dunyada) ibret olmak uzere bir cezaya carptırdı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Suphesiz ki, bunda saygı duyacaklar icin bir ibret vardır"
        }
    ]
}