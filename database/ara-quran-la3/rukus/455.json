{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Waalththariyati tharwan"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Faalhamilati wiqran"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Faaljariyati yusran"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Faalmuqassimati amran"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Innama tooAAadoona lasadiqun"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Wa-inna alddeena lawaqiAAun"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Waalssama-i thati alhubuki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Innakum lafee qawlin mukhtalifin"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Yu/faku AAanhu man ofika"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Qutila alkharrasoona"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Allatheena hum fee ghamratin sahoona"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yas-aloona ayyana yawmu alddeeni"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Yawma hum AAala alnnari yuftanoona"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Thooqoo fitnatakum hatha allathee kuntum bihi tastaAAjiloona"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Inna almuttaqeena fee jannatin waAAuyoonin"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Akhitheena ma atahum rabbuhum innahum kanoo qabla thalika muhsineena"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Kanoo qaleelan mina allayli ma yahjaAAoona"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Wabial-ashari hum yastaghfiroona"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Wafee amwalihim haqqun lilssa-ili waalmahroomi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Wafee al-ardi ayatun lilmooqineena"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Wafee anfusikum afala tubsiroona"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Wafee alssama-i rizqukum wama tooAAadoona"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Fawarabbi alssama-i waal-ardi innahu lahaqqun mithla ma annakum tantiqoona"
        }
    ]
}