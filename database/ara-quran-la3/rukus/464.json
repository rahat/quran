{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "Kaththabat thamoodu bialnnuthuri"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "Faqaloo abasharan minna wahidan nattabiAAuhu inna ithan lafee dalalin wasuAAurin"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "Aolqiya alththikru AAalayhi min baynina bal huwa kaththabun ashirun"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "SayaAAlamoona ghadan mani alkaththabu al-ashiru"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "Inna mursiloo alnnaqati fitnatan lahum fairtaqibhum waistabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "Wanabbi/hum anna almaa qismatun baynahum kullu shirbin muhtadarun"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "Fanadaw sahibahum fataAAata faAAaqara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "Fakayfa kana AAathabee wanuthuri"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "Inna arsalna AAalayhim sayhatan wahidatan fakanoo kahasheemi almuhtathiri"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "Walaqad yassarna alqur-ana lilththikri fahal min muddakirin"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "Kaththabat qawmu lootin bialnnuthuri"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "Inna arsalna AAalayhim hasiban illa ala lootin najjaynahum bisaharin"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "NiAAmatan min AAindina kathalika najzee man shakara"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "Walaqad antharahum batshatana fatamaraw bialnnuthuri"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "Walaqad rawadoohu AAan dayfihi fatamasna aAAyunahum fathooqoo AAathabee wanuthuri"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "Walaqad sabbahahum bukratan AAathabun mustaqirrun"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "Fathooqoo AAathabee wanuthuri"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "Walaqad yassarna alqur-ana lilththikri fahal min muddakirin"
        }
    ]
}