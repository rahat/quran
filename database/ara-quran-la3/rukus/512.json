{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "La oqsimu biyawmi alqiyamati"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Wala oqsimu bialnnafsi allawwamati"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Ayahsabu al-insanu allan najmaAAa AAithamahu"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Bala qadireena AAala an nusawwiya bananahu"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Bal yureedu al-insanu liyafjura amamahu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Yas-alu ayyana yawmu alqiyamati"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Fa-itha bariqa albasaru"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Wakhasafa alqamaru"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "WajumiAAa alshshamsu waalqamaru"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "Yaqoolu al-insanu yawma-ithin ayna almafarru"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Kalla la wazara"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Ila rabbika yawma-ithin almustaqarru"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "Yunabbao al-insanu yawma-ithin bima qaddama waakhkhara"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Bali al-insanu AAala nafsihi baseeratun"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Walaw alqa maAAatheerahu"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "La tuharrik bihi lisanaka litaAAjala bihi"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Inna AAalayna jamAAahu waqur-anahu"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Fa-itha qara/nahu faittabiAA qur-anahu"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Thumma inna AAalayna bayanahu"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Kalla bal tuhibboona alAAajilata"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Watatharoona al-akhirata"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Wujoohun yawma-ithin nadiratun"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Ila rabbiha nathiratun"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Wawujoohun yawma-ithin basiratun"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Tathunnu an yufAAala biha faqiratun"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Kalla itha balaghati alttaraqiya"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Waqeela man raqin"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Wathanna annahu alfiraqu"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Wailtaffati alssaqu bialssaqi"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Ila rabbika yawma-ithin almasaqu"
        }
    ]
}