        {
            "chapter": 37,
            "verse": 47,
            "text": "La feeha ghawlun wala hum AAanha yunzafoona"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "WaAAindahum qasiratu alttarfi AAeenun"
