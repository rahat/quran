{
    "pages": [
        {
            "chapter": 38,
            "verse": 43,
            "text": "Wawahabna lahu ahlahu wamithlahum maAAahum rahmatan minna wathikra li-olee al-albabi"
        },
        {
            "chapter": 38,
            "verse": 44,
            "text": "Wakhuth biyadika dighthan faidrib bihi wala tahnath inna wajadnahu sabiran niAAma alAAabdu innahu awwabun"
        },
        {
            "chapter": 38,
            "verse": 45,
            "text": "Waothkur AAibadana ibraheema wa-ishaqa wayaAAqooba olee al-aydee waal-absari"
        },
        {
            "chapter": 38,
            "verse": 46,
            "text": "Inna akhlasnahum bikhalisatin thikra alddari"
        },
        {
            "chapter": 38,
            "verse": 47,
            "text": "Wa-innahum AAindana lamina almustafayna al-akhyari"
        },
        {
            "chapter": 38,
            "verse": 48,
            "text": "Waothkur ismaAAeela wa-ilyasaAAa watha alkifli wakullun mina al-akhyari"
        },
        {
            "chapter": 38,
            "verse": 49,
            "text": "Hatha thikrun wa-inna lilmuttaqeena lahusna maabin"
        },
        {
            "chapter": 38,
            "verse": 50,
            "text": "Jannati AAadnin mufattahatan lahumu al-abwabu"
        },
        {
            "chapter": 38,
            "verse": 51,
            "text": "Muttaki-eena feeha yadAAoona feeha bifakihatin katheeratin washarabin"
        },
        {
            "chapter": 38,
            "verse": 52,
            "text": "WaAAindahum qasiratu alttarfi atrabun"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "Hatha ma tooAAadoona liyawmi alhisabi"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "Inna hatha larizquna ma lahu min nafadin"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "Hatha wa-inna lilttagheena lasharra maabin"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "Jahannama yaslawnaha fabi/sa almihadu"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "Hatha falyathooqoohu hameemun waghassaqun"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "Waakharu min shaklihi azwajun"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "Hatha fawjun muqtahimun maAAakum la marhaban bihim innahum saloo alnnari"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "Qaloo bal antum la marhaban bikum antum qaddamtumoohu lana fabi/sa alqararu"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "Qaloo rabbana man qaddama lana hatha fazidhu AAathaban diAAfan fee alnnari"
        }
    ]
}