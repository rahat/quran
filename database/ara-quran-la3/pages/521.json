{
    "pages": [
        {
            "chapter": 51,
            "verse": 7,
            "text": "Waalssama-i thati alhubuki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Innakum lafee qawlin mukhtalifin"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Yu/faku AAanhu man ofika"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Qutila alkharrasoona"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Allatheena hum fee ghamratin sahoona"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yas-aloona ayyana yawmu alddeeni"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Yawma hum AAala alnnari yuftanoona"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Thooqoo fitnatakum hatha allathee kuntum bihi tastaAAjiloona"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Inna almuttaqeena fee jannatin waAAuyoonin"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Akhitheena ma atahum rabbuhum innahum kanoo qabla thalika muhsineena"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Kanoo qaleelan mina allayli ma yahjaAAoona"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Wabial-ashari hum yastaghfiroona"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Wafee amwalihim haqqun lilssa-ili waalmahroomi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Wafee al-ardi ayatun lilmooqineena"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Wafee anfusikum afala tubsiroona"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Wafee alssama-i rizqukum wama tooAAadoona"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Fawarabbi alssama-i waal-ardi innahu lahaqqun mithla ma annakum tantiqoona"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "Hal ataka hadeethu dayfi ibraheema almukrameena"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "Ith dakhaloo AAalayhi faqaloo salaman qala salamun qawmun munkaroona"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "Faragha ila ahlihi fajaa biAAijlin sameenin"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "Faqarrabahu ilayhim qala ala ta/kuloona"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "Faawjasa minhum kheefatan qaloo la takhaf wabashsharoohu bighulamin AAaleemin"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "Faaqbalati imraatuhu fee sarratin fasakkat wajhaha waqalat AAajoozun AAaqeemun"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "Qaloo kathaliki qala rabbuki innahu huwa alhakeemu alAAaleemu"
        }
    ]
}