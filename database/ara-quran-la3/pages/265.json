{
    "pages": [
        {
            "chapter": 15,
            "verse": 52,
            "text": "Ith dakhaloo AAalayhi faqaloo salaman qala inna minkum wajiloona"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "Qaloo la tawjal inna nubashshiruka bighulamin AAaleemin"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "Qala abashshartumoonee AAala an massaniya alkibaru fabima tubashshirooni"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "Qaloo bashsharnaka bialhaqqi fala takun mina alqaniteena"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "Qala waman yaqnatu min rahmati rabbihi illa alddalloona"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "Qala fama khatbukum ayyuha almursaloona"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "Qaloo inna orsilna ila qawmin mujrimeena"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "Illa ala lootin inna lamunajjoohum ajmaAAeena"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "Illa imraatahu qaddarna innaha lamina alghabireena"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "Falamma jaa ala lootin almursaloona"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "Qala innakum qawmun munkaroona"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "Qaloo bal ji/naka bima kanoo feehi yamtaroona"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "Waataynaka bialhaqqi wa-inna lasadiqoona"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "Faasri bi-ahlika biqitAAin mina allayli waittabiAA adbarahum wala yaltafit minkum ahadun waimdoo haythu tu/maroona"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "Waqadayna ilayhi thalika al-amra anna dabira haola-i maqtooAAun musbiheena"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "Wajaa ahlu almadeenati yastabshiroona"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "Qala inna haola-i dayfee fala tafdahooni"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "Waittaqoo Allaha wala tukhzooni"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "Qaloo awa lam nanhaka AAani alAAalameena"
        }
    ]
}