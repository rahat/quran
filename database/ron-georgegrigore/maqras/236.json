{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Când cerul se va despica"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "el îl va asculta pe Domnul său şi va face ceea ce trebuie să facă"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Când pământul va fi netezit"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "şi va vărsa lăuntrurile sale, golindu-se"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "el îl va asculta pe Domnul său şi va face ceea ce trebuie să facă"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Omule, tu, cel care cauţi către Domnul tău, atunci îl vei întâlni pe El"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Cel care va primi Cartea Sa cu mâna dreaptă"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "va fi judecat cu blândeţe"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "şi se va întoarce bucuros la ai săi"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Cel care va primi Cartea Sa cu spatele"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "va fi dat pierzaniei"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "şi aruncat în Jăratec"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "El a fost fericit dimpreună cu ai săi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "şi nu s-a gândit niciodată să se întoarcă spre Domnul său"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "însă Domnul său l-a văzut întotdeauna"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Nu! Jur, pe amurg"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "pe noapte şi pe cea ce învăluie"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "pe luna plină"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "că veţi fi făcuţi fărâme"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Ce au de nu cred"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "De ce nu se prosternează când li se recită Coranul"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Ba nu! Tăgăduitorii hulesc"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "iar Dumnezeu cunoaşte ceea ce ei ascund"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Vesteşte-le lor o dureroasă osândă"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "însă nu şi celor care au crezut şi au săvârşit fapte bune, căci pe ei o răsplată necurmată îi aşteaptă"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Pe cer cu zodiile sale"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Pe Ziua făgăduită"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Pe martor şi pe mărturisit"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Moarte stăpânilor peste Ukhdud"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "unde focul are ceea ce arde"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "în vreme ce ei stau acolo"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "martori a ceea ce le făceau credincioşilor"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "răzbunându-se pe ei doar fiindcă au crezut în Dumnezeu, Puternicul, Lăudatul"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Cel ce are împărăţia cerurilor şi a pământului. Dumnezeu, Cel ce, asupra tuturor, este Martor"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Cei care îi duc în ispită pe credincioşi şi pe credincioase, iar apoi nu se căiesc, vor avea parte de osânda Gheenei, vor avea parte de osânda Pârjolului"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Cei care cred şi săvârşesc fapte bune, vor avea parte de Grădini pe sub care curg râuri: aceasta este izbânda cea mare"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Asprimea Domnului tău este mare"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "El este La-iveală-dătătorul şi Inapoi-aducătorul"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "El este Iertătorul, Iubitorul"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Stăpânul slăvit al tronului"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Făcătorul a ceea ce voieşte"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "A venit la tine oare spusa despre oşti"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Despre Faraon şi despre tamudiţi"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doar cei care tăgăduiesc hulesc"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "în vreme ce Dumnezeu, prin spate, îi cuprinde"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Acesta este un preaslăvit Coran"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "de pe Tabla Păstrată"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Pe cer şi pe luceafăr"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Cum vei şti tu oare care este luceafărul"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "El este steaua cea sfredelitoare"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Fiece suflet are asupra sa un păzitor"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Omul, să privească din ce a fost creat"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "El a fost creat dintr-o apă ţâşnitoare"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "ieşită dintre şale şi coaste"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "El îl poate aduce înapoi"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "în Ziua când tainele vor fi puse la încercare"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "şi atunci acel om nu va avea nici putere şi nici ajutor"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Pe cer cu întoarcerea lui"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Pe pământ cu desfacerea lui"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Acesta este un Cuvânt despărţitor"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "ce nu are în el nimic uşuratic"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Dacă ei urzesc ceva"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "şi Eu voi urzi"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Dă-le un răgaz tăgăduitorilor! Mai dă-le doar un scurt răgaz"
        }
    ]
}