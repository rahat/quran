{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Nu ştie el oare că atunci când mormintele-şi vor arunca afară lăuntrurile"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "iar ceea ce este în piepturi va fi scos la iveală"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "în Ziua aceea, Domnul lor, va avea deplina lor ştiinţă"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Cea care bate"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Ce este oare cea care bate"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Cum vei şti tu oare ce este cea care bate"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Ea va fi Ziua când oamenii vor fi ca fluturii împrăştiaţi"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "iar munţii precum lâna scărmănaţi"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Când cele-i cântărite greu vor atârna"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "un trai de mulţumire va afla"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Când cele-i cântărite uşor vor atârna"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "genunea este maica ce îşi va afla"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Şi cum o vei cunoaşte, oare"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O vâlvătaie dogorâtoare"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Mirajul bogăţiei vă ia în stăpânire"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "până când la morminte veţi merge în ospeţie"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Ba nu! Curând veţi afla ştire"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Şi iarăşi nu! Curând veţi avea ştire"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "De-aţi avea ştirea în chip neîndoios"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "aţi vedea Iadul cu prisos"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "L-aţi vedea cu ochiul neîndolielii"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "în ziua aceea, când veţi fi întrebaţi de-ale plăcerii"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Pe amiază"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Omul este sortit pierzaniei"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Nu şi cei care cred însă, cei care săvârşesc fapte bune, cei care se îndeamnă întru adevăr, cei care se îndeamnă întru răbdare"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Vai clevetitorului — bârfitorului"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "care strânge averi şi le numără"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "El crede că averile îi vor da nemurirea"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Ba nu! El va fi azvârlit în Al-Hutamah"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Şi cum vei şti tu oare ce este Al-Hutamah"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Este focul aprins al lui Dumnezeu"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "ce scrutează sufletele"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "boltindu-se asupra lor"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "pe trâmbe înalte"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Nu ai văzut ce a făcut Domnul tău cu oamenii elefantului"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Oare nu a făcut vicleşugul o rătăcire"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Oare nu a trimis asupra lor păsări în stoluri"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "ce aruncau peste ei pietre din Iad"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Şi astfel i-a făcut aidoma unor paie mâncate"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Pentru învoiala quraişiţilor"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "învoiala lor de unire la caravana de iarnă şi de vară"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "să se închine Domnului acestui Lăcaş"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "căci El, la foame, i-a hrănit; căci El, la teamă, i-a liniştit"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "L-ai văzut pe cel care socoate Legea minciună"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "El este cel care izgoneşte orfanul"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "şi nu lasă să fie hrănit sărmanul"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vai acelor rugători"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "ce în rugăciunea lor stau nepăsători"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Ei vor să fie cât mai la vedere"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "însă împiedică ceea ce se cere"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Noi ţie ţi-am dăruit belşugul"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Tu, roagă-te Domnului tău şi Lui îi jertfeşte"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "şi lipsit de urmaşi va fi cel care te urăşte"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "Spune: “O, tăgăduitorilor"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Eu nu mă închin la ceea ce vă închinaţi voi"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Nici voi nu sunteţi închinători la ceea ce mă închin eu"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Nici eu nu sunt închinător la ceea ce v-aţi închinat voi"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Nici voi nu sunteţi închinători la ceea ce mă închin eu"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Voi aveţi legea voastră, iar eu am legea mea!”"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Când va veni ajutorul lui Dumnezeu şi biruinţa"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "şi vei vedea oamenii intrând în Legea lui Dumnezeu cu cetele"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "atunci preamăreşte-L pe Domnul tău cu laude, căci El este De-căinţă-primitorul"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Să-i piară mâinile lui Abu-Lahab şi el însuşi să piară"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Să nu-i priască averea-i şi ceea ce a agonisit"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Într-un foc cu vâlvătaie fi-va aruncat"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "dimpreună cu femeia sa, cărătoarea de vreascuri"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "cu o frânghie din sfoară de curmal legată de gât"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "Spune: “Unul este Dumnezeu"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Dumnezeu!.. Absolutul"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "El nu naşte şi nu se naşte"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "şi nimeni nu-I este asemenea.”"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "Spune: “Izbăvire caut la Domnul zorilor"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "de răul a ceea ce a creat"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "de răul beznei când se lasă"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "de răul celor care suflă peste noduri"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "de răul pizmaşului când pizmuieşte!”"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "Spune: “Izbăvire caut la Domnul oamenilor"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Regele oamenilor"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Dumnezeul oamenilor"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "de răul şoptitorului-furişătorului"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "cel care şopteşte răul în inimile oamenilor"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "fie el dintre ginni ori dintre oameni!”"
        }
    ]
}