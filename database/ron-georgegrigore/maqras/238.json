{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Nu, eu jur pe această cetate"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Şi tu eşti locuitor al acestei cetăţi"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Pe un tată şi pe ceea ce a odrăslit"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Noi am creat omul în neajuns"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Oare el socoate că nimeni nu-l poate dovedi"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "El spune: “Am isprăvit averi cu toptanul!”"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Oare el socoate că nimeni nu l-a văzut"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Oare nu Noi i-am făcut ochi"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "limbă şi buze"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Oare nu Noi i-am arătat cele două căi"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "El nu o apucă însă pe calea suitoare"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Cum vei şti tu oare care este calea suitoare"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Aceasta înseamnă să răscumperi un prins"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "să ospătezi, într-o zi de foamete"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "o rudă orfană"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "ori un sărman lipit pământului"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Aceasta înseamnă să fii în rândul celor care cred, al celor care se îndeamnă la răbdare, al celor care se îndeamnă la îndurare"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Aceştia sunt cei de-a dreapta"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Cei care tăgăduiesc însă semnele Noastre sunt cei de-a stânga"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "asupra lor un foc se va bolti"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Pe soare şi lumina sa"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Pe lună când îi urmează"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Pe ziuă când îl dezvăluie"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Pe noapte când îl învăluie"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Pe cer! Şi cum l-a zidit"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Pe pământ! Şi cum l-a întins"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Pe suflet! Şi cum l-a plăsmuit, punând în el desfrâu şi pioşenie"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Ferice de cel care şi-l mântuie"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Cel care şi-l întinează însă este pierdut"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Tamudiţii, în ticăloşia lor, huleau"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "iar cei mai nemernici dintre ei au ieşit în faţă"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Trimisul lui Dumnezeu le spuse: “Este cămila lui Dumnezeu! Lăsăţi-o să bea!”"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Ei l-au făcut mincinos şi au ologit cămila"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Pentru păcatul lor, Domnul lor i-a făcut fărâme pe toţi deopotrivă"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "şi nu s-a temut de urmare"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Pe ziua care-l dezvăluie"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Pe noaptea care-l învăluie"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Pe ceea ce El a creat, bărbat şi femeie"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Felurită este truda voastră"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Celui care dă şi se teme"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "celui care socoate adevărată prea-frumoasa răsplată"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Noi îl vom înlesni întru înlesnire"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Zgârcitului ce caută să se îmbogăţească"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "celui care socoate minciună prea-frumoasa răsplată"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Noi îl vom înlesni întru împovărare"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "La nimic nu-i va sluji averea sa, când se va prăvăli în genune"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Să arătăm Calea cea Dreaptă"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "căci Viaţa de Apoi şi Viaţa de Acum sunt ale noastre deopotrivă"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "V-am prevenit asupra Focului arzător"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "în care va fi aruncat cel prea nemernic"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "cel care huleşte şi apoi întoarce spatele"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Cel mult temător va fi ţinut însă deoparte"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "ca şi cel care dă din averea sa întru mântuire"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "Nimeni nu-şi va afla rasplata la El"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "în afara celui care caută la faţa Domnului său, Preaînaltul"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "şi care va fi mulţumit"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Pe lumina zilei"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "Pe noaptea ce învăluie pământul"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Domnul tău nici nu te-a părăsit şi nici nu te-a urât"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "Pentru tine, mai bună va fi Viaţa de Apoi decât Viaţa de Acum"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Din darurile Sale Domnul tău îţi va dărui, iar tu mulţumit vei fi"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Nu te-a aflat El orfan şi te-a adăpostit"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Rătăcitor te-a aflat şi te-a călăuzit"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "Sărac te-a aflat şi te-a îmbogăţit"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Orfanul, tu să nu-l oropseşti"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "Cerşetorul, tu să nu-l alungi"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "De harul Domnului tău, necurmat să povesteşti"
        }
    ]
}