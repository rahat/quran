{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "El s-a încruntat şi a întors spatele"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "când orbul a venit la el"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ce ştii tu? Poate s-ar fi mântuit"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "ori şi-ar fi amintit, iar amintirea i-ar fi folosit"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "În schimb pe cel bogat"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "tu îl primeşti cu cinste"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "fără să-ţi pese dacă se va mântui"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "iar pe cel care vine la tine, plin de râvnă"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "plin de teamă"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "tu, cu nepăsare, îl primeşti"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Nu! Aceasta este o amintire"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "oricui vrea să-şi amintească"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Ea este de pe sulurile prea cinstite"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "înălţate, curăţate"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "de mâinile scribilor"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "cinstiţi şi nevinovaţi"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Să fie ucis omul! Cât este de tăgăduitor"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Din ce l-a creat"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Dintr-un strop de sămânţă! L-a creat şi i-a dat o soartă"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "i-a făcut calea uşoară"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "apoi l-a lăsat să moară şi a pus să fie înmormântat"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "iar când va voi, îl va scula"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Nu! Omul nu împlineşte ceea ce El îi porunceşte"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Omul, să se uite la hrana sa"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Noi am vărsat apă, şi ce vărsare"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Noi am crăpat pământul, şi ce crăpare"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Noi am făcut să răsară grâne"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "vii şi legume"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "măslini şi curmali"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "şi grădini dese"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "fructe şi păşuni"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "zestre vouă şi turmelor voastre"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Când va veni însă Vuietul"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "în ziua când omul va fugi de fratele său"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "de mama sa, de tatăl său"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "de soţia sa, de fiii săi"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "în Ziua aceea fiece om îşi va primi răsplata"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "În Ziua aceea"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "vor fi chipuri strălucitoare, surâzătoare şi bucuroase"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "însă în Ziua aceea"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "vor fi şi chipuri colbuite"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Aceştia vor fi tăgăduitorii, desfrânaţii"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Când soarele se va chirci"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "când stelele vor cădea"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "când munţii vor fi puşi în mişcare"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "când cămilele în zece luni lăsate în uitare"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "când fiarele vor fi adunate"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "când mările se vor revărsa"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "când sufletele vor fi împerecheate"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "când copila de vie îngropată va fi întrebată"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "pentru care păcat a fost omorâtă"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "când sulurile vor fi împrăştiate"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "când cerul va fi dat la o parte"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "când Iadul va fi încins"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "când Raiul va fi aproape"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "atunci fiece suflet va şti ceea ce a adus"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Ba nu! Jur pe planetele"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ce alunecă şi trec"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Pe noapte când se întunecă"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Pe zori când lin adie"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Acesta este cuvântul unui prea-cinstit trimis"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "cu putere de la Stăpânul Tronului Nezdruncinat"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "supus şi credincios"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Prietenul vostru nu este îndrăcit"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "El l-a văzut în zare desluşit"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "şi El cu Taina nu este zgârcit"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Acesta nu este cuvântul unui diavol la pietre luat"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Unde plecaţi"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Aceasta este doar o amintire pentru lumi"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "pentru aceia dintre voi care vor să calce drept"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Voi nu voiţi însă decât ceea ce Dumnezeu, Stăpânul lumilor, voieşte"
        }
    ]
}