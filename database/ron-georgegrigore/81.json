{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Când soarele se va chirci"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "când stelele vor cădea"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "când munţii vor fi puşi în mişcare"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "când cămilele în zece luni lăsate în uitare"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "când fiarele vor fi adunate"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "când mările se vor revărsa"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "când sufletele vor fi împerecheate"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "când copila de vie îngropată va fi întrebată"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "pentru care păcat a fost omorâtă"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "când sulurile vor fi împrăştiate"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "când cerul va fi dat la o parte"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "când Iadul va fi încins"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "când Raiul va fi aproape"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "atunci fiece suflet va şti ceea ce a adus"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Ba nu! Jur pe planetele"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ce alunecă şi trec"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Pe noapte când se întunecă"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Pe zori când lin adie"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Acesta este cuvântul unui prea-cinstit trimis"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "cu putere de la Stăpânul Tronului Nezdruncinat"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "supus şi credincios"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Prietenul vostru nu este îndrăcit"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "El l-a văzut în zare desluşit"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "şi El cu Taina nu este zgârcit"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Acesta nu este cuvântul unui diavol la pietre luat"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Unde plecaţi"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Aceasta este doar o amintire pentru lumi"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "pentru aceia dintre voi care vor să calce drept"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Voi nu voiţi însă decât ceea ce Dumnezeu, Stăpânul lumilor, voieşte"
        }
    ]
}