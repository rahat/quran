{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Despre ce se întreabă unii pe alţii"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Despre Vestea cea Mare"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "asupra căreia se ceartă"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ba nu!... Curând ei vor avea ştire"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Şi iarăşi, curând ei vor avea ştire"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Nu am făcut Noi pământul leagăn"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "iar munţii ţăruşi"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Noi v-am creat pe voi cu pereche"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Şi v-am făcut vouă somnul odihnă"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Noi am făcut noaptea veşmânt"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "şi am făcut ziua pentru trai"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Am zidit deasupra voastră şapte tării"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Am făcut o candelă dogoritoare"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Şi din nori am trimis apă şuvoi"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ca să dea la iveală grâne şi ierburi"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "şi grădini îmbelşugate"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Da, Ziua Cumpenei este hotărâtă"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "În Ziua când se va sufla în trâmbiţă, veţi veni în cete"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Cerul se va deschide şi vor fi numai porţi"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Munţii se vor pune în mişcare şi vor fi numai năluciri"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Gheena ce stă la pândă"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "va fi liman ticăloşilor"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "care vor zăcea acolo veacuri de-a rândul"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "fără să guste răcoare ori băutură"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "ci numai apă clocotită şi băutură împuţită"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "căci aceasta le va fi răsplată cuvenită"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Ei nu aşteptau nici o Judecată"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "căci socoteau semnele Noastre minciuni"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Noi am ţinut însă socoteala la tot într-o carte"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Gustaţi, aşadar! Noi vouă nu vă vom mări decât osânda"
        }
    ]
}