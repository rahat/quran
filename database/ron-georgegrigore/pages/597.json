{
    "pages": [
        {
            "chapter": 95,
            "verse": 1,
            "text": "Pe smochin şi pe măslin"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Pe muntele Sinai"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Pe această cetate tihnită"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Noi am creat omul dându-i chip desăvârşit"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "şi l-am trimis apoi în catul cel mai de jos"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "afară de cei care au crezut şi au făcut fapte bune pe care o răsplată necurmată îi aşteaptă"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Ce te face să socoţi apoi Legea minciună"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Nu este oare Dumnezeu cel mai drept dintre judecători"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Citeşte în numele Domnului tău ce a creat"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Cel ce a creat omul dintr-un cheag de sânge"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Citeşte, căci Domnul tău este Mult-dăruitorul"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "El l-a învăţat pe om cu condeiul"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "l-a învăţat ceea ce nu ştia"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Omul, dimpotrivă, se îngâmfează"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "îndată ce se vede bogat"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Tot la Domnul tău este însă întoarcerea"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "L-ai văzut pe cel care îl împiedica"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "pe un rob (al lui Dumnezeu) să se roage"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "L-ai socotit c-ar fi pe Calea cea dreaptă"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "când poruncea pietate"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "L-ai văzut apoi hulind şi întorcând spatele"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Nu ştie el oare că Dumnezeu este Atoatevăzător"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Ba nu! Dacă nu încetează, îl vom scutura de cârlionţul din frunte"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "cârlionţ mincinos şi păcătos"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Să-şi cheme obştea lui"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Noi vom chema îngerii-păzitorii"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Nu! Nu-i da ascultare! Ci prosternează-te şi apropie-te (de Dumnezeu)"
        }
    ]
}