{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Pe cer şi pe luceafăr"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Cum vei şti tu oare care este luceafărul"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "El este steaua cea sfredelitoare"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Fiece suflet are asupra sa un păzitor"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Omul, să privească din ce a fost creat"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "El a fost creat dintr-o apă ţâşnitoare"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "ieşită dintre şale şi coaste"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "El îl poate aduce înapoi"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "în Ziua când tainele vor fi puse la încercare"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "şi atunci acel om nu va avea nici putere şi nici ajutor"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Pe cer cu întoarcerea lui"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Pe pământ cu desfacerea lui"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Acesta este un Cuvânt despărţitor"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "ce nu are în el nimic uşuratic"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Dacă ei urzesc ceva"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "şi Eu voi urzi"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Dă-le un răgaz tăgăduitorilor! Mai dă-le doar un scurt răgaz"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Slăveşte numele Domnului tău, Prea-Înaltul"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Cel ce plăsmuieşte şi şlefuieşte"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Cel ce sorteşte şi călăuzeşte"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Cel ce păşunea o face ivită"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "şi o preface apoi în fâneaţă înnegrită"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Noi te vom pune să citeşti şi nu vei uita"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "decât ceea ce Dumnezeu voieşte, căci El cunoaşte cele dezvăluite şi cele tăinuite"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Pe tine te vom înlesni întru înlesnire"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Adu-le aminte, căci aducerea aminte este de folos"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Cel care se teme îşi va aduce aminte"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "însă cel preanemernic se va da la o parte"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Acela va fi aruncat în Focul cel Mare"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "unde nici nu va muri şi nici nu va trăi"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Fericit va fi cel care se mântuie"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "cel care aminteşte numele Domnului său şi se roagă"
        }
    ]
}