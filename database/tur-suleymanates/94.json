        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz senin (bunalan) göğsünü açmadık mı (ondaki bunalımları, sıkıntıları giderip, onu ilim, hikmet ve huzur ile genişletmedik mi)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve atmadık mı senin üzerinden yükünü"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki (o, ağırlığından) sırtını çatırdatmıştı"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin şanını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Muhakkak her güçlükle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet, her güçlükle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde (işlerinden) boşaldığın zaman (ibadete) dur"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Rabb'ine niyaz et, yalvar"
        }
