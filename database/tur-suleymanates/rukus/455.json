{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Savurup kaldıranlara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "(Yağmur) Yüklü (bulut)lara"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp gidenlere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "İş(ler)i taksim edenlere (rızıkları, yağmurları dağıtan güçlere) andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size va'dedilen, mutlaka doğrudur"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ceza muhakkak olacaktır"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "(Çeşitli) yolları (yörüngeleri) bulunan göğe andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Siz, çeşitli söz(ler) içindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Çevrilen, ondan çevriliyor"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "O (çeşitli sözleri) atan yalancılar kahrolsun"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Onlar aptallık içinde yanılıp durmaktadırlar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Ceza günü ne zaman? diye sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gün onlar ateş üzerinde yakılacaklardır"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "(Kendilerine): \"Fitnenizi (fesadınızın cezasını) tadın! Acele isteyip durduğunuz şey budur işte!\" (denilecek)"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Korunanlar, cennetlerde, çeşme başlarındadırlar"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rablerinin, kendilerine verdiğini alırlar. Çünkü onlar bundan önce güzel davranırlardı"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri pek az uyurlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seherlerde onlar istiğfar ederlerdi"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Mallarında dilenci ve yoksul için hak vardı"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Kesin inanacaklar için yerde nice ibretler vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi canlarınızda da öyle. Görmüyor musunuz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gökte rızkınız da var, uyarıldığınız (azab)da var"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Göğün ve yerin Rabbine andolsun ki o, sizin konuştuğunuz gibi gerçektir"
        }
    ]
}