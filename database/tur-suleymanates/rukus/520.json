{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun söküp çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Hemen çekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarışıp, geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken işi düzenleyenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün o gürültü sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından başka bir gürültü gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün bazı yürekler çarpar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri (korkudan) aşağı kayar"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: \"Biz yine eski halimize döndürülecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz çürümüş kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyle ise bu, ziyanlı bir dönüştür! dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O (olay zor değil) bir tek haykırış(a bakmakta)dır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hemen onlar uyanıklık alanındadırlar"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa'nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona Kutsal Vadi'de, \"Tuva\"'da ünlemişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Fir'avn'a git, çünkü o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: Arınmağa gönlün var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbin(in yolun)a ileteyim de O'ndan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona büyük mu'cizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı, karşı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra sırtını döndü; (Musa'nın getirdiklerini iptal etmek için) çalışmağa koyuldu"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "(Adamlarını) Topladı, (onlara) bağırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben sizin en yüce Rabbinizim! dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu, sonun ve ilkin (ahiretin ve dünyanın) azabıyle cezalandırdı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Şüphesiz bunda (Allah'tan) korkacak kimse için ibret vardır"
        }
    ]
}