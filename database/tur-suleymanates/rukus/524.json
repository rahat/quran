{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar saçıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler fışkırtıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına getirildiği zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her can, ne (yapıp) öne sürdüğünü ve ne (yapmayıp) geride bıraktığını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni engin kerem sahibi Rabbine karşı ne aldatıp isyana sürükledi"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O (Rab) ki seni yarattı, seni düzenledi, sana ölçülü bir biçim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni(n organlarını) dilediği şekilde birbirine ekledi"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, (bu gururunuzun sebebi şudur) siz ceza (görme)yi yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa üzerinizde koruyucu(yaptıklarınızı zabtedici melek)ler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Değerli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptığınız herşeyi bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler ni'met içindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler de yakıcı ateş içindedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza günü oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar ondan (hiçbir yere kaçıp) kaybolacak değillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gününün ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ve yine ceza gününün ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O, kimsenin kimseye yardım edemeyeceği bir gündür! O gün buyruk, yalnız Allah'ındır"
        }
    ]
}