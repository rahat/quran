{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çokluk yarışı, sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz (kabre girinceye kadar mal artırmağa çalıştınız)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır (olmaz bu), yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır, yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır, (gerçeği) kesin bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Mutlaka cehennemi görür (oun varlığını gözle görmüş gibi kabul eder)diniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra onu kesin olarak gözle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gün, (size verilen) ni'metten sorulacaksınız"
        }
    ]
}