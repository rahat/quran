{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, andolsun Aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Dönüp gitmekte olan geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ağaran sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Ki o (Sekar), büyük(bela)lardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "İnsanlar için uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden (iman yolunda) ileri gitmek veya geri kalmak dileyen kimseler için (uyarıcıdır)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her can, kazandığıyle (Allah katında) rehin alınmıştır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Yalnız sağın adamları (Kitapları sağdan verilenler) hariç"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennetler içinde soruyorlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suçluların durumunu"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi şu yakıcı ateşe ne sürükledi"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "(Onlar da) Dediler ki: \"Biz namaz kılanlardan olmadık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Boş şeylere dalanlarla birlikte dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ceza gününü yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "İşte böyle iken ölüm bize gelip çattı"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık onlara şefa'atçilerin şefa'ati fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Böyle iken onlara ne oluyur ki öğütten yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Yaban eşekleri gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan ürkmüş"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her kişi kendisine açılan sahifeler verilmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Yok yok onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır (iyi bilsinler ki) o (Kur'an) bir ikazdır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen onu düşünür, öğüt alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Allah dilemedikçe onlar öğüt almazlar. Takva ve mağfiret ehli O'dur (kendisinden korunmağa, cezasından kaçınmağa layık olan ve günahları bağışlayan yalnız O'dur)"
        }
    ]
}