{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Olacak vak'a olduğu (kıyamet koptuğu) zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun oluşunu yalanlayacak yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alçaltıcı, yükselticidir (yerleri alt üst eder)"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetliesarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar serpildikçe serpildiği"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dağılan toz duman haline geldiği"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağın adamları (amel defterleri sağ tarafından verilenler), ne uğurlulardır onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solun adamları (amel defterleri sol tarafından verilenler), ne uğursuzlardır onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve o sabıklar, sabıklar"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte, onlardır (Allah'a) yaklaştırılanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Ni'met cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden (olan bu insanlar)"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın ve cevahirle işlenmiş tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların üzerinde karşılıklı yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Çevrelerinde, ebedi yaşamağa erdirilmiş gençler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Akıp giden şarap kaynağından doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(Bir şarap ki) Ondan ne başları ağrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendikleri meyva(lar)"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş et(ler)i"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "İri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karşılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş bir söz ve ne de günaha sokan bir laf işitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Duydukları söz, yalnız \"Selam, selam\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağın adamları, nedir o sağın adamları"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(Onlar) Dikensiz kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "(Kökünden tepesine kadar) meyva dizili muzlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölge(ler)"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fışkıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Pek çok mevya arasında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yükseltilmiş döşekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz (oradaki) kadınları da yeniden bir güzel inşa' etmişiz"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler yapmışızdır"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Hep yaşıt sevgililer"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağın adamları için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "(Bu sağcıların) Bir bölümü öncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir bölümü de sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solun adamları (amel defterleri, sol tarafından verilenler), nedir o solcular"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "(Onlar) Delikçiklere işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kara dumandan bir gölge altında"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ki ne serindir, ne faydalı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar bundan önce varlık içinde şımartılmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı işlemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardı ki: \"Biz öldükten, toprak ve kemik yığını olduktan sonra, biz mi bir daha diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Öncekiler de sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün buluşma vakti için mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz de, ey sapık yalanlayıcılar (o zaman toplanacaksınız)"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "(Suçlular) Mutlaka bir Zakkum ağacından yiyecekler"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Onunla karınları(nı) dolduracaklar"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üzerine de kaynar su içeceklerdir"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susuzluk hastalığına tutulmuş develerin içişi gibi içeceklerdir"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza gününde onların ağırlanışı böyledir"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Biz sizi yarattık; doğrulamanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Akıttığınız meniyi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Siz mi onu yaratıyorsunuz, yoksa yaratıcılar biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz ve bizim önümüze geçilmiş değildir (kimse ölüme engel olamaz)"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "(Size böyle ölümü takdir ettik) Ki sizin yerinize benzerlerinizi getirelim ve sizi, bilmediğiniz bir biçimde yeniden inşa' edelim"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratmayı bildiniz, (bunu) düşünüp ibret almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğinizi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Siz mi onu bitiyorsunuz, yoksa bitirenler biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik, onu kuru bir çöp yapardık, sızlanıp dururdunuz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Biz borçlandık, (yaptığmız masraflar boşa gitti)"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Doğrusu, biz yoksun bırakıldık! (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçtiğiniz suya baktınız mı"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Siz mi onu buluttan indirdiniz, yoksa indirenler biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Şüketmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "(İki dalı birbirine sürterek) Çıkardığınız ateşi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız, yoksa yaratanlar biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve çölden gelip geçenlere bir fayda yaptık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse büyük Rabbinin adını yücelt"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yoo, yıldızların yerlerine yemin ederim"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Bilirseniz, bu büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "O, elbette değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Saklı bir Kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ki ona temizlerden başkası dokunmaz"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz, bu sözü mü küçümsüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "(Kur'an'dan istifade edeceğiniz yerde) Rızkınızı, yalanlamanızdan ibaret mi kılıyorsunuz (sizin ondan elde ettiğiniz nasib, sadece onu yalanlamanız mıdır)"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Ya can boğaza dayandığı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Ki siz de o zaman (can çekişen kimseye) bakıp durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona sizden daha yakınız, fakat siz görmezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Eğer (öldükten sonra) cezalandırılmayacaksanız"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "(Bu sözünüzde doğru iseniz) o(çıkmakta olan ca)nı geri döndürsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "(O can, Allah'a) Yaklaştırılanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "O'na rahatlık, güzel rızık ve ni'met cenneti var"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer sağcılardan (amel defteri sağ tarafından verilenlerden) ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "(Ey sağcı) Sana sağcılardan selam var"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Ama yalanlayıcı sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Kaynar sudan bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılma var"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Kesin gerçek budur işte"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse büyük Rabbinin adını tesbih et (O'nu, kendisine layık olmayan sıfatlardan tenzih eyle)"
        }
    ]
}