{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama siz, şu yakın hayatı yeğliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu (hükümler), elbette ilk sahifelerde de vardı"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nn sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Şiddet ve dehşetiyle her şeyi) Sarıp kaplayacak olan(o felaket)in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yüzler var ki o gün öne düşüktür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışır, yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın ateşe girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kendilerine kaynamış bir gözeden (su) içirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru dikenden başka yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne semirtir, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yüzler de var ki o gün ni'met içinde mutlu"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "İşinden memnun"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir bahçededir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı develere, nasıl yaratılmış"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe, nasıl yükseltilmiş"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara, nasıl dikilmiş"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere, nasıl yayılıp döşenmiş"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Öğüt ver, çünkü sen ancak öğüt verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde zorlayıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve inanmazsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en büyük azabı eder"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Dönüşleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını görmek Bize düşer"
        }
    ]
}