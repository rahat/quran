{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneşe ve onun aydın sabahına andolsun"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izleyen aya andolsun"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Güneşi ortaya çıkaran gündüze andolsun"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu örten geceye andolsun"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu yapana andolsun"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yuvarlayıp döşeyene andolsun"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu biçimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Ona bozukluğunu ve korunmasını (isyanını ve ita'atini) ilham edene andolsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "(Allah'tan başkasına tapmayarak) Nefsini yücelten kazanmış"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "(Yaratıklara taparak) Onu alçaltan da ziyana uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud (kavmi), azgınlığı yüzünden (Hakk'ı) yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En haydutları ayaklandığı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın elçisi onlara: \"Allah'ın devesine ve onun su içme hakkına dokunmayın!\" demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanladılar, deveyi kestiler. Rableri de, günahları yüzünden azabı başlarına geçirip, orayı dümdüz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "(Rab) Bu işin sonundan korkmaz"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Örttüğü zaman geceye andolsun"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Göründüğü zaman gündüze andolsun"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Sizin işiniz çeşit çeşittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim (hayır için) verir, korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve en güzel(söz)ü doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona en kolay(yolda gitmey)i kolaylaştırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Kim de cimrilik eder, kendini zengin (ve kendine yeterli) görürse"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en güzel(söz)ü de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Ona da en güç(yolda gitmey)i kolaylaştırırız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Çukura düştüğü zaman malı ona hiçbir fayda sağlamaz"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğru yola iletmek bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Son da ilk de (ahiret de dünya da) bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alev saçan bir ateşe karşı uyardım"
        }
    ]
}