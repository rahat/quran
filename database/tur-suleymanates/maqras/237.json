{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adını tesbih et (O'nun eksikliklerden uzak olduğunu an)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki (her şeyi) yarattı, düzenledi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ve O ki herşeyin miktarını, biçimini belirleyip hedefini gösterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ve O ki otlağı çıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir çöpe çevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı), okutacağız, unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah'ın dilediğini unutursun. O, açığı da bilir, gizli olanı da"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eğer hatırlatmak yarar verirse hatırlat, öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'a) Saygılı olan hatırlar (öğüt alır)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bahtsız olan da ondan kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O da en büyük ateşe girer"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra orada ne ölür, ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu, mutluluğa ermiştir zekat veren"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama siz, şu yakın hayatı yeğliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu (hükümler), elbette ilk sahifelerde de vardı"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nn sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Şiddet ve dehşetiyle her şeyi) Sarıp kaplayacak olan(o felaket)in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yüzler var ki o gün öne düşüktür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışır, yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın ateşe girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kendilerine kaynamış bir gözeden (su) içirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru dikenden başka yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne semirtir, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yüzler de var ki o gün ni'met içinde mutlu"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "İşinden memnun"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir bahçededir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı develere, nasıl yaratılmış"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe, nasıl yükseltilmiş"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara, nasıl dikilmiş"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere, nasıl yayılıp döşenmiş"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Öğüt ver, çünkü sen ancak öğüt verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde zorlayıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve inanmazsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en büyük azabı eder"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Dönüşleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını görmek Bize düşer"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun fecre (tan yeri ağarmasına)"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Çift'e ve tek'e"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gitmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Bu( anıla)n (şeyler)de akıl sahibi için bir yemin var, değil mi? (İşte bunlara andolsun ki kafirler mutlaka azaba uğrayacaklardır)"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Görmedin mi Rabbin ne yaptı 'Ad(kavmin)e"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sütunlu İrem'e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki ülkeler arasında onun eşi yaratılmamıştı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadi('l-Kura)da kayaları oya(rak evler yapa)n Semud(kavmin)e"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Ve kazıklar sahibi Fir'avn'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Bunlar ülkelerde azmışlardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda çok kötülük etmişlerdi"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yüzden Rabbin onların üzerine azab kırbacını çarptı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Elbette Rabbin gözetleme yerindedir (her an kullarının fiillerini gözetlemektedir)"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Fakat insan öyledir; Rabbi ne zaman kendisini sınayıp ona ikramda bulunur, ona ni'met verirse: \"Rabbim bana ikram etti\" der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama Rabbi onu sınayıp rızkını daraltırsa: \"Rabbim beni alçalttı (perişan etti)\" der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır, doğrusu siz (Allah'tan ikram bekliyorsunuz ama kendiniz) yetime ikram etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksula yedirmeğe teşvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası hırsla yutuyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı pek çok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, yer birbiri ardınca sarsılıp dümdüz edildiği zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizili durumda Rabbin geldiği zaman"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ve cehennem de getirildiği zaman. İşte o gün insan anlar, ama artık anlamanın kendisine ne yararı var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "(O zaman insan): \"Ah, keşke ben bu hayatım için (iyi işler yapıp) gönderseydim!\" der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gün O'nun yapacağı azabı kimse yapamaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "Ve O'nun vuracağı bağı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura eren nefis"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Razı edici ve razı edilmiş olarak Rabbine dön"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "(İyi) Kullarım arasına gir"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime gir"
        }
    ]
}