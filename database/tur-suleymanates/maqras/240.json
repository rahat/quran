{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi o, kabirlerde olanlar dışarı atıldığı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Göğüslerde bulunanlar devşirildiği zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "O gün Rabbleri onların her halini haber almış(gizli ve açık bütün yaptıklarını bilmiş)tir"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Çarpan olay"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o çarpan olay"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O çarpan olayın ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar, yayılmış pervaneler gibi olur(lar)"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar atılmış renkli yün gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, memmun edici bir hayat içindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun anası (bağrına atılacağı) haviye(uçurum)dur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızgın bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çokluk yarışı, sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz (kabre girinceye kadar mal artırmağa çalıştınız)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır (olmaz bu), yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır, yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır, (gerçeği) kesin bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Mutlaka cehennemi görür (oun varlığını gözle görmüş gibi kabul eder)diniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra onu kesin olarak gözle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gün, (size verilen) ni'metten sorulacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asra andolsun ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "İnsan ziyandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak inanıp iyi işler yapanlar, birbirlerine hakkı tavsiye edenler ve birbirlerine sabrı tavsiye edenler ziyanda değillerdir"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "(İnsanları) Diliyle çekiştiren, kaş ve gözüyle işaretler yapıp alay eden her fesad kişinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki mal yığdı, onu saydı durdu"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının, kendisini ebedi yaşatacağını sanıyor"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, andolsun ki o, Hutame'ye atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame'nin ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah'ın tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "(Bir ateş) Ki gönüllere işler"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O, onların üzerine kapatılıp kilitlenecektir"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(Kendileri,) Uzatılmış direkler arasında (bağlı) olarak (kalacaklardır)"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin, Fil sahiplerine ne yaptığını görmedin m"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Üzerlerine sürü sürü kuşlar gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara çamurdan sertleşmiş taşlar atan (kuşlar)"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Nihayet onları, kurt yeniği ekin yaprağı gibi yaptı"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyşi alıştırdığı için"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Onları kış ve yaz yolculuğuna alıştırdığı için"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu Ev(Ka'be'n)in Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O ki onları yedirip açlıktan kurtardı ve onları korkudan güvene kavuşturdu"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Din(ahiret cezasın)ı yalanlayan(adam)ı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte o, öksüzü iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmağa önayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Şu namaz kılanların vay haline"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ki, onlar namazlarından gaflet ederler (kıldıkları namazın değerini bilmez, ona önem vermezler)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gösteriş (için ibadet) yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En ufak bir yardımı esirgerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana Kevser'i (bol ni'met, ilim ve büyük şeref) verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Öyleyse Rabbin için namaz kıl ve nahret (kurban kes veya ellerini boğazına kadar kaldırıp tekbir al)"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl sonu kesik olan, sana buğzedendir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: Ey nankörler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin yaptığınız ibadeti yapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim yaptığım ibadeti yapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben asla sizin yapmakta olduğunuz ibadeti yapıcı değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim yapmakta olduğum ibadeti yapıcı değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim banadır"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah'ın yardımı ve fetih geldiği"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Ve insanların dalga dalga Allah'ın dinine girdiklerini gördüğün zaman"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini överek tesbih et, O'ndan mağfiret dile. Çünkü O, tevbeyi kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebuleheb'in iki eli kurusun (yok olsun o); zaten yok oldu ya"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ne malı, ne de kazandığı onu (Allah'ın kahrından) kurtaramadı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Alevli bir ateşe girecektir (o)"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da, odun hamalı olarak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda hurma lifinden bir ip olacaktır"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah Samed'dir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Kendisi doğurmamıştır ve doğurulmamıştır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hiçbir şey O'nun dengi olmamıştır"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: Sığınırım ben, karanlığı yarıp sabahı ortaya çıkaran Rabbe"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlığı çöktüğü zaman gecenin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Düğümlere üfleyip tüküren büyücü kadınların şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Ve hased ettiği zaman hasedcinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: \"Sığınırım ben, insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "İnsanların padişahına"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "İnsanların Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "O sinsi vesvesecinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "O ki insanların göğüslerine (kötü düşünceler) fısıldar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerek insanlardan (olan bütün vesvesecilerin şerrinden Allah'a sığınırım)"
        }
    ]
}