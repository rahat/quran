{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Kendisine yaraştığı üzere Rabbini(n buyruğunu) dinlediği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatıl(ıp dümdüz yapıl)dığı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçindekileri dışarı atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve kendisine yaraştığı üzere Rabbini(n buyruğunu) dinlediği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, sen, Rabbine varan yolda çabalayıp durmaktasın, nihayet O'na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "(O zaman) Kimin Kitabı sağından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin Kitabı arka tarafından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O, ölümü çağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, (dünyada) ailesi arasında (şımarık ve) sevinçli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, hiç (Rabbine) dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, Rabbi O'nu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, and içerim; akşamın alaca karanlığına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve (gecenin bağrında) topladığı şeylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Değirmileşen aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz, mutlaka tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onların nesi var ki inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur'an okunduğu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine o nankörler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların, içlerinde gizledikleri (düşünceleri) biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara acı bir azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak inanıp yararlı işler yapan kimseler için kesintisiz bir mükafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlar sahibi göğe andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Va'dedilen güne andolsun"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(O gün) Şahide ve şahidlik edilene andolsun"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Ki kahroldu o hendeğin adamları"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O yakıt doldurulup tutuşturulmuş ateş (hendeğinin adamları)"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar, o(ateş hendeği)nin başında oturmuşlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve onlar, mü'minlere yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Mü'minler sırf aziz, övgüye layık Allah'a inandıkları için o (zalim)ler onlardan öc aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O (Allah) ki göklerin ve yerin hükümranlığı O'nundur. Allah, her şeye tanıktır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "İnanmış erkek ve kadınlara işkence edip sonra (yaptıklarına) tevbe etmeyenler (yok mu), onlar için cehennem azabı vardır ve onlar için yangın azabı vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İnanan ve iyi işler yapan kimseler için de altlarından ırmaklar akan cennetler vardır. İşte büyük başarı budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Şüphesiz Rabbinin tutuşu şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "İlkin var eden, sonra geri çevirip yeniden yaratan O'dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O bağışlayandır, sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arş'ın sahibidir, yücedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "İstediğini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "(Yani) Fir'avn ve Semud(kavimlerin)in"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu, nankörler bir yalanlama içindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır, (Kur'an, onların dedikleri gibi bir söz değil), o şerefli bir Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Korunan bir levhada(yazılı)dır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve tarık'a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık'ın ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Parlayan yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir can yoktur ki başında bir koruyucu (bekçi) olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel ile kaburga kemikleri arasından çıkan (bir sudan)"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "O (Allah), onu tekrar döndür(üp yarat)mağa kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlilerin (ortaya dökülüp) yoklanacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "İnsanın ne bir gücü, ne de bir yardımcısı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Dönüşlü göğe andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(Bitkilerin çıkması için) Çatlayan yere andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "O (Kur'an), elbette (hak ile batılı) ayırdedici bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar (onu iptal etmek için) bir tuzak kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de (onları yakalamak için) bir tuzak kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Hele sen o kafirlere mühlet ver, biraz bırak onları (bildiklerine gitsinler)"
        }
    ]
}