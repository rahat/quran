{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Surat astı ve döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kör geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin belki o arınacak"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut öğüt dinleyecek de öğüt, kendisine yarayacak"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendisini zengin görüp tenezzül etmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun arınmamasından sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat koşarak sana gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Saygılı olarak gelmişken"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır (olmaz böyle şey); o (ayetler), bir hatırlatmadır"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen onu düşünüp öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(O öğüt) Sahifeler içindedir: Değer verilen"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Saygı ile yükseltilen, tertemiz (sayfalar)"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Yazıcıların ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Değerli, iyi (yazıcıların)"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan, ne kadar da nankördür"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(Allah) Onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Nutfe (sperm)den. Onu yarattı, ona biçim verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü, kabre koydurdu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu diriltip kaldırdı"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır, insan, O'nun kendisine emrettiğini yapmadı"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan şu yiyeceğine baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz suyu iyice döktük"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı güzelce yardık da"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Orada bitirdik: Dane"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzüm, yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytin, hurma"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "İri ve gür bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyva ve çayır"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve hayvanlarınızın geçimi için"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Çarpınca kulakları sağır eden o gürültü geldiği zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "İşte o gün kişi kaçar: kardeşinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve oğullarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün, onlardan her kişinin, kendisine yeter derecede işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Yüzler var ki o gün parıl parıl"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güleç, sevinçli"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yüzler de var ki o gün tozlanmış"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onları karanlık bürümüş (öylesine üzgün, öylesine dertli)"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar kafirler, Hak'tan sapanlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş büzüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar kararıp döküldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "On aylık gebe develer başı boş bırakıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler çiftleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve sorulduğu zaman o diri diri toprağa gömülen kıza"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günah(ı) yüzünden öldürüldü? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amel) defterler(i) açılıp yayıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök sıyrılıp açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her can, ne yapıp getirdiğini bilir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yoo, yemin ederim o geri kalıp gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp gidenlere, dönüp saklananlara"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Sırtını dönen geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Soluk almağa başlayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "(Andolsun bunlara) Ki o, değerli bir elçinin (Cebrail'in) sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(O elçi,) Güçlüdür, Arşın sahibi (Allah) katında yücedir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada (kendisine) ita'at edilen, güvenilendir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız cinli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun (Muhammed) onu apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında (verdiği haberlerden dolayı) suçlanamaz"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O (Kur'an) kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemlere öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Aranızdan doğru hareket etmek isteyen için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}