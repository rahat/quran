{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "(دل دہلا دینے والی) کڑک"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "یہ (زہرہ گداز) کڑک کیا ہے ؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "اور آپ کو کیا معلوم کہ یہ کڑک کیا ہے"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "جس دن لوگ بکھرے ہوئے پروانوں کی طرح ہو گے"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "اور پہاڑ رنگ برنگی دھنکی ہوئی اون کی مانند ہوں گے"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "پھر جس کے (نیکیوں کے ) پلڑے بھاری ہوں گے"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "تو وہ دل پسند عیش (ومسرت) میں ہوگا"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "اور جس کے (نیکیوں کے) پلڑے ہلکے ہوں گے"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "تو اس کا ٹھکانا ہاویہ ہوگا"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "اور آپ کو کیا معلوم کہ وہ ہاویہ کیا ہے ؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "ایک دہکتی ہوئی اگ"
        }
    ]
}