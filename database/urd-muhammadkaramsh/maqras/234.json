{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "چیں برجبیں ہوئے اور منہ پھیر لیا"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "(اس وجہ سے کہ) ان کے پاس ایک نابینا آیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "اور آپ کیا جانیں شاید وہ پاکیزہ تر ہوجاتا"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا وہ غور وفکر کرتا تو نفع پہنچاتی اسے یہ نصیحت"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "لیکن وہ جو پروا نہیں کرتا"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "آپ اس کی طرف تو توجہ کرتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "اور آپ پر کوئی ضرر نہیں اگر وہ نہ سدھرے"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اور جو آپ کے پاس آیا ہے دوڑتا ہوا"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور وہ ڈر بھی رہا ہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو آپ اس سے بےرخی برتتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "ایسا نہ چاہیے یہ تو نصیحت ہے ،"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "سو جس کا جی چاہے اسے قبول کرلے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "یہ ایسے صحیفوں میں (ثبت ) ہے جو معزز ہیں"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "جو بلند مرتبہ پاکیزہ ہیں"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ایسے کاتبوں کے ہاتھوں سے لکھے ہیں"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "جو بڑے بزرگ اور نیکو کار ہیں"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "غارت ہو (منکر) انسان! وہ کتنا احسان فراموش ہے"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "کسی چز سے اللہ نے اسے پیدا کیا"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "ایک بوند سے ۔ اسے پیدا کیا پھر اس کی ہرچیز اندازہ سے بنائی"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھر زندگی کی راہ اس کے لیے آسان کردی"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اسے موت دی اور اسے قبر میں پہنچا دیا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہے گا اسے دوبارہ زندہ کردے گا"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "یقیناً وہ بجا نہ لایا جو اللہ نے اسے حکم دیا تھا"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پھر ذرا انسان غور سے دیکھے اپنی غذا کو"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "بے شک ہم نے زور سے پانی برسایا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر اچھی طرح پھاڑا زمین کو"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر ہم نے اگایا اس میں غلہ"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اور انگور اور ترکاریاں"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجوریں"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گھنے باغات"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور (طرح طرح کے ) پھل اور گھاس"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "سامان زیست تمہارے لیے اور تمہارے مویشیوں کے لیے"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پھر جب کان بہرا کرنے والا شور اٹھے گا"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "اس دن آدمی بھاگے گا اپنے بھائی سے"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور اپنی ماں سے اور اپنے باپ سے"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور اپنی بیوی سے اور اپنے بچوں سے"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "ہر شخص کو ان میں سے اس دن ایسی فکر لاحق ہوگی جو اسے (سب سے) بےپروا کردے گی"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "کتنے ہی چہرے اس دن (نور ایمان سے) چمک رہے ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ہنستے ہوئے خوش وخرم"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور کئی منہ اس دن غبار آلود ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ان پر کالک لگی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "یہی وہ کافر (و) فاجر لوگ ہوں گے"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "(یاد کرو) جب سورج لپیٹ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "اور جب ستارے بکھر جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑوں کو اکھیڑ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب دس ماہ کی گابھن اونٹنیاں چھٹی پھریں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب وحشی جانور یکجا کر دیے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب سمندر بھڑکا دیے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب جانیں (جسموں سے) جوری جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زندہ درگور کی ہوئی (بچی) سے پوچھا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ وہ کس گناہ کے باعث ماری گئی"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب اعمال نامے کھولے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کی کھال ادھیڑ لی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب جہنم دہکائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب جنت قریب کردی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(تو اس دن) ہر شخص جان لے گا کہ وہ کیا لے کر آیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پھر میں قسم کھاتا ہوں پیچھے ہٹ جانے والے تاروں کی"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(اور قسم کھاتا ہوں) سیدھے چلنے والے ، رکے رہنے والے تاروں کی"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی جب وہ رخصت ہونے لگے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی جب وہ سانس لے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "کہ یہ (قرآن) ایک معزز قاصد کا (لایا ہوا) قول ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو قوت والا ہے مالک عرش کے ہاں عزت والا ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(سب فرشتوں کا) سردار اور وہاں کا امین ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور تمہارا یہ ساتھی کوئی مجنون تو نہیں"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اور بلاشبہ اس نے اس قاصد کو دیکھا ہے روشن کنارے پر"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور یہ نبی غیب بتانے میں ذرا بخیل نہیں"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ (قرآن) کسی شیطان مردود کا قول نہیں"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم (منہ اٹھائے) کدھر چلے جارہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "نہیں ہے یہ مگر نصیحت سب اہل جہان کے لیے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(لیکن ہدایت وہی پاتا ہے) جو تم میں سے سیدھی راہ چلنا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم نہیں چاہ سکتے بجز اس کے کہ اللہ چاہے جو رب العالمین ہے"
        }
    ]
}