{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gokyuzu parcalanıp yarıldıgında"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "ve yıldızlar dagılıp savruldugunda"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler kabarıp tastıgında"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "ve kabirler alt ust oldugunda"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "her insan, (sonunda,) ilerisi icin ne hazırladıgını ve (bu dunyada) ne bıraktıgını anlayacaktır"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Nedir seni lutuf sahibi Rabbinden uzaklastıran"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "seni yaratan ve varlık amacına uygun olarak sekillendiren, tabiatını adil olculer icinde olusturan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "ve seni diledigi sekilde bir araya getiren (Rabbinden)"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, (ey insanlar,) siz (Allah´ın) hukmunu yalanla(maya ne zaman kalkıstıysanız Allah´tan uzaklas)tınız"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki uzerinizde gozetleyici gucler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "degerli kaydedici(ler)"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "yaptıgınız her seyin farkında olan"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Bakın, (oteki dunyada) gercek erdem sahipleri nimetler icinde bulunacaklar"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kotu ruhlular ise yakıcı bir ates icinde"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "(bir ates ki) Hesap Gunu ortasına duserler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "ve ondan kurtulmaları mumkun olmaz"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Hesap Gunu nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ve bir kez daha: Hesap Gunu nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Hicbir insanın baska birine zerre fayda saglayamayacagı bir Gun(dur o) cunku o Gun (acık secik gorulecektir ki) hakimiyet yalnız Allah´a aittir"
        }
    ]
}