{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Ah! Apansız (gelen) bir bela"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Ne korkunctur apansız (gelen) bela"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Bilir misin nedir, nasıl olacaktır o apansız bela"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "(O,) insanların saskın vaziyette ucusan pervanelere benzeyecegi Gun"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "ve dagların yumusak yun topaklarını andıracagı Gun (vuku bulacaktır)"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "O zaman, (iyiliklerinin) tartısı agır basan"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "kendisini mutlu bir hayat icinde bulacak"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "tartısı hafif gelen ise"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "bir ucurumun girdabına suruklenecektir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Bilir misin nedir o (ucurum)"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Daglayan bir ates"
        }
    ]
}