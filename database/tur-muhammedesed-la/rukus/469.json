{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Gerceklesecek olan (sonunda) gerceklestigi zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun yalan olmadıgı apacık ortaya cıkacaktır"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "o, (bazılarını) alcaltan, (digerlerini) yucelten(dir)"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer (siddetli) bir sarsıntı ile sarsıldıgında"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "ve daglar ufalana ufalana"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "toz toprak haline geldiginde"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "(iste o Gun,) siz uc sınıf(a ayrılmıs) olacaksınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Kiminiz dogruyu bulmuslardan olacak. Ah! ne (mutlu) kimselerdir dogruyu bulmus olanlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ve kiminiz kotuluge batmıslardan olacak. Ah! ne (mutsuz) kimselerdir kotuluge batmıs olanlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Onde olanlar ise (hayatta iken, inanc ve guzel fiillerde) one cıkanlar olacak"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "(Her zaman) Allah´a yakınlık saglayanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "(Onlar) esenlik ve mutluluk bahcelerinde (yasayacaklar)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "cogu eski zamanların"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "ama (sadece) pek azı sonraki donemlerin (insanları)"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Onlar, altın islemeli mutluluk tahtlarına (kurulacaklar)"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "(ve) birbirlerine (sevgi ile) bakarak uzanacaklar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onları olumsuz genclikler bekleyecek"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "tertemiz kaynakların suyundan doldurulmus kaseler, ibrikler ve fincanlarla"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ne kafalarını dumanlayan ne de onları sarhos eden (bir su)"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "ve secebilecekleri her cesit meyveyle"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "ve canlarının cekebilecegi her cesit kus etiyle"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve en guzel gozlu saf ve temiz esler (yanlarında olacak)"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "kabuklarının icinde saklı bulunan inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "(Hayatta iken) yaptıklarının bir odulu (olacak bu)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos konusmalar duyacaklar, ne de gunaha yonelten bir cagrı"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "ama sadece ic sukuneti ve barıs mujdesi"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Durust ve erdemli bir hayat yasayanlara gelince, nedir bu durust ve erdemli hayat surenler(in odulu)"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(Onlar,) meyve dolu sidre agacları arasında (bulacaklar kendilerini)"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "ciceklerle bezenmis akasyalar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "genisce yayılmıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "fıskıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "ve bol bol meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "hic eksilmeyen, hic tukenmeyen"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuceltilmis esler(i onlarla olacak)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "cunku, Biz onları yenilenmis bir hayatta tekrar var etmis olacagız"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "ve bakireler olarak diriltecegiz"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "sevgi dolu ve uyum icinde"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "durust ve erdemli olanlarla"
        }
    ]
}