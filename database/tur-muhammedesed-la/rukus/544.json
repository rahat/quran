{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Bir acgozluluk saplantısı icindesiniz"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "mezarlarınıza girinceye dek (suren)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Ama, zamanı geldiginde anlayacaksınız"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Evet, evet! Zamanı geldiginde anlayacaksınız"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır, (onu) tartısılmaz bir kesinlikle anlasaydınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "(cehennemin) yakıcı atesini mutlaka gorurdunuz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonunda onu keskin bir gozle mutlaka goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "ve o Gun hayatın nimetleri(ne karsı yaptıklarınız) icin mutlaka sorguya cekileceksiniz"
        }
    ]
}