{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku yaratan Rabbin adına"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "insanı bir yumurta hucresinden yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, cunku Rabbin Sonsuz Kerem Sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "(insana) kalemi kullanmayı ogretendir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "insana bilmedigini belleten"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Gercek su ki insan futursuzca azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "ne zaman kendini yeterli gorse"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "oysa, herkes eninde sonunda Rabbine donecektir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Hic dusundun mu su engellemeye kalkısanı"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "(Allah´ın) bir kulu(nu) namazdan"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Hic dusundun mu o dogru yolda mıdır"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ya da Allah´a karsı sorumluluk bilinciyle yuklu mu"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Hic dusundun mu onun hakikati yalanla(ma)yabilecegini ve sırtını (ona) don(mey)ebilecegini"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O bilmez mi ki Allah (her seyi) gorur"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır, eger vazgecmezse, onu alnından tutup surukleyecegiz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "o yalancı, isyankar alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Bırak, kendi aklının (asılsız, duzmece) tavsiyelerini (yardımına) cagırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "(o zaman) Biz de semavi azap guclerini cagırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır, ona kulak verme, ama (Allah´ın huzurunda) yere kapan ve (O´na) yakınlas"
        }
    ]
}