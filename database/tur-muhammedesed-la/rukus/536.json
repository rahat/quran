{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz kalbini ac(ıp ferahlat)madık mı"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "ve uzerinden yuku kaldırmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "o belini buken (yuku)"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Serefini ve itibarını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Elbette her guclukle birlikte bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Suphesiz, her guclukle bir kolaylık"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Oyleyse (sıkıntıdan) kurtuldugun zaman saglam dur"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "ve yalnız Rabbine sevgi ile yonel"
        }
    ]
}