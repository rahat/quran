{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "¿Has visto a quien desmiente el Día de la Recompensa"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Es el mismo que aparta de sí violentamente al huérfano"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "y que no anima a alimentar al necesitado"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Así pues ¡Ay de los que rezan"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "y que son negligentes con su oración"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Aquellos que la hacen para ser vistos"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "y niegan la ayuda"
        }
    ]
}