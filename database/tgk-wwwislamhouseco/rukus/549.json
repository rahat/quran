{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "[Эй Паёмбар] Оё касе, ки рӯзи ҷазоро дурӯғ меангорад, дидаӣ"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Пас ӯ [ҳамон] касест, ки ятимро [бо дуруштӣ аз худ] меронад"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ва [дигаронро] ба итъоми тиҳидаст ташвиқ намекунад"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Пас, вой бар намозгузорон"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ҳамон касоне, ки аз намозашон ғофиланд"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Касоне, ки худнамоӣ мекунанд"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ва [аз амонат додани] васоили зарурии зиндагӣ дареғ меварзанд"
        }
    ]
}