{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "آن کوبنده"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چیست آن کوبنده؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه می دانی آن کوبنده چیست؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزی که مردم [در سراسیمگی] چون پروانه های پراکنده اند"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و کوه ها مانند پشم رنگین حلاجی شده گردد"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "اما هرکس اعمال وزن شده اش سنگین و باارزش است؛"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "پس او در یک زندگی خوش و پسندیده ای است،"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما هرکساعمال وزن شده اش سبک و بی ارزش است،"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "پس جایگاه و پناهگاهش هاویه است،"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو چه می دانی هاویه چیست؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشی بسیار داغ و سوزاناست"
        }
    ]
}