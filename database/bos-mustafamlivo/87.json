{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Slavi ime Gospodara svog Svevišnjeg"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Koji stvara, pa usklađuje"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "I Koji odmjerava, pa upućuje"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "I Koji izvodi pašnjak"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Pa ga učini otpadom tamnozelnim"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Poučićemo te učenju, pa nećeš zaboraviti"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Izuzev šta htjedne Allah. Uistinu! On zna otkriveno i šta je skriveno"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "A olakšaćemo ti za lahkoću"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Zato opominji, ako koristila opomena"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Opomenuće se ko se boji"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "A izbjegava je najnesrećniji"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Koji će se pržiti vatrom velikom"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Potom neće u njoj umrijeti, niti živjeti"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Zaista će uspjeti ko se očisti"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "I sjeti imena Gospodara svog, pa salat obavi"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Naprotiv, više volite život Dunjaa"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "A Ahiret je bolji i trajniji"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Uistinu! Ovo je u listovima ranijim"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Listovima Ibrahimovim i Musaovim"
        }
    ]
}