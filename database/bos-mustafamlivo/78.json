{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "O čemu se raspituju"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O vijesti krupnoj"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Onoj o kojoj se oni razilaze"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Nikako! Saznaće"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Ponovo, nikako, saznaće"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Zar nismo učinili Zemlju posteljom"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "A brda stubovima"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "I stvorili vas u parovima"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "I učinili san vaš odmorom"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "I učinili noć pokrivkom"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "I načinili dan za privređivanje"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "I sazdali iznad vas sedam jakih"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "I načinili svjetiljku plamteću"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "I spustili iz oblaka vodu obilnu"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Da izvedemo njome zrno i bilje"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "I bašče guste"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Uistinu, Dan odluke je vrijeme određeno"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Na Dan kad se puhne u sur pa dođete u grupama"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "I otvori nebo, pa bude kapijama"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "I pokrenu brda, pa bude fatamorgana"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Uistinu, Džehennem će biti busija"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Za prevršitelje povratište"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Oni će ostati u njemu godinama"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Neće okusiti u njemu hladnoću, niti piće"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Izuzev vrele vode i ledene"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Plaće odgovarajuće"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Uistinu, oni se nisu nadali obračunu"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "I poricali su ajete Naše laganjem"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "A svaku stvar: pobrojali smo je Knjigom"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Zato kušajte. Pa nećemo vam povećati - sem kaznu"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Uistinu, bogobojazni će imati uspjeh"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bašče i vinograde"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "I jedrih grudi vršnjakinje"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "I čašu punu"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Neće u njemu čuti besmislicu, niti laganje"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Plaća od Gospodara tvog, dar obračunat"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Gospodara nebesa i Zemlje i šta je između njih, Milostivog. Neće moći govoriti s Njim"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Na Dan kad bude stajao Duh i meleci posafani, neće govoriti, izuzev onaj kome dopusti Milostivi - a govoriće tačno"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Taj dan je istinit, pa ko hoće, uzeće ka Gospodaru svom povratište"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Uistinu, Mi vas upozoravamo kaznom bliskom, na Dan kad vidi čovjek šta su unaprijed poslale ruke njegove i rekne nevjernik: \"O da sam prašina"
        }
    ]
}