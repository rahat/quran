{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kad se nebo rascijepi"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "I kad se planete rasprše"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "I kad mora uzavriju"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "I kad se kaburi ispreturaju"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Znaće duša šta je unaprijed poslala i (šta) zapostavila"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O čovječe! Šta te je obmanulo o Gospodaru tvom plemenitom"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Koji te je stvorio, pa te uredio, te te simetričnim učinio"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "U kojem obliku, kako je htio, sastavio te"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Nikako! Naprotiv, poričete Sud"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "A uistinu, nad vama su čuvari"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Plemeniti pisari"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Znaju šta činite"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Uistinu, pravedni će u zadovoljstvo"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "I uistinu, razvratnici će u džehim"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Pržiće se njime Dana sudnjeg"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "I neće oni iz njega biti odsutni"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "A šta znaš ti šta je Dan sudnji"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ponovo, šta znaš ti šta je Dan sudnji"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Dan kad neće vladati duša za dušu nimalo, a komanda će Tog dana biti Allahova"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Teško zakidateljima"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Koji kad uzimaju od svijeta, traže potpuno"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "A kad njima mjere ili im vagaju, zakidaju"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Zar ne misle takvi da će oni biti podignuti"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Za Dan strašni"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Dan kad će stati ljudi pred Gospodara svjetova"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Nikako! Zaista je knjiga razvratnika u Sidždžinu"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "A šta znaš ti šta je Sidždžin"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Knjiga ispisana"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "Teško Tog dana poricateljima"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Koji niječu Dan sudnji"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "A ne niječe ga, izuzev svaki prestupnik, grješnik"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Kad mu se uče ajeti Naši, rekne: \"Priče ranijih"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Nikako! Naprotiv, ono što su stekli je hrđa na srcima njihovim"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Nikako! Zaista će oni od Gospodara svoga Tog dana biti zaklonjeni"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Zatim će se uistinu oni pržiti džehimom"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Potom će biti rečeno: \"Ovo je to što ste poricali"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Nikako! Uistinu je Knjiga čestitih u Illijjunu"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "A šta znaš ti šta je Illijjun"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Knjiga ispisana"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Svjedočiće je približeni"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Uistinu će čestiti u zadovoljstvu biti"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Na divanima će gledati"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Spoznaćeš na licima njihovim sjaj zadovoljstva"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Napajani će biti nektarom zapečaćenim"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Pečat njegov biće misk; a za to neka se natječu takmičari"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "A mješavina njegova od Tesnima"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "Izvora s kojeg će piti približeni"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Uistinu! Oni koji su skrivili ismijavali su se onima koji su vjerovali"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "I kad su pored njih prolazili, namigivali"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "A kad su se vraćali porodici svojoj, vraćali su se šaleći se"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "I kad bi ih vidjeli, rekli bi: \"Zaista su ovi zalutali"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "A nisu poslani nad njima čuvarima"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Pa, Danas će se oni koji su vjerovali, nevjernicima ismijavati"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Na divanima će gledati"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Zar nisu nevjernici nagrađeni kako su radili"
        }
    ]
}