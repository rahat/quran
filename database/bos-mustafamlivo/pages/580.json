{
    "pages": [
        {
            "chapter": 76,
            "verse": 26,
            "text": "I (dio) noći - pa čini sedždu Njemu i slavi Ga noću dugo"
        },
        {
            "chapter": 76,
            "verse": 27,
            "text": "Uistinu! Takvi vole ubrzano, a zanemaruju pred sobom Dan tegobni"
        },
        {
            "chapter": 76,
            "verse": 28,
            "text": "Mi smo ih stvorili i ojačali vezišta njihova, a kad htjednemo, zamijenićemo sličnim njima (kompletnom) promjenom"
        },
        {
            "chapter": 76,
            "verse": 29,
            "text": "Uistinu! Ovo je Opomena, pa ko hoće, uzeće Gospodaru svom put"
        },
        {
            "chapter": 76,
            "verse": 30,
            "text": "A hoćete samo šta hoće Allah! Uistinu! Allah je Znalac, Mudri"
        },
        {
            "chapter": 76,
            "verse": 31,
            "text": "Uvodi koga hoće u milost Svoju, a zalimima: pripremio im je kaznu bolnu"
        },
        {
            "chapter": 77,
            "verse": 1,
            "text": "Tako mi izaslanika uzastopnih"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Te onih koji bjesne uraganski"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "I onih koji rasprostiru prostiranjem"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Te onih koji razdvajaju dijeljenjem"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Te onih koji dostavljaju Opomenu"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Opravdanje ili upozorenje"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Uistinu, ono čime vam se prijeti dogodiće se"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Pa kad se zvijezde pogase"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "I kad se nebo rastvori"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "I kad se brda zdrobe (u prašinu)"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "I kad se poslanicima vrijeme odredi"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Za koji dan je odgođeno"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Za Dan razdvajanja"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "A šta znaš ti šta je Dan razdvajanja"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Teško Tog dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Zar nismo uništili ranije"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Zatim dali da ih slijede kasniji"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Tako postupamo sa prestupnicima"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Teško Tog dana poricateljima"
        }
