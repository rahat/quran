{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, o siddetli sarsıntıyla sarsıldıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, agırlıklarını dısa atıp cıkardıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: «buna ne oluyor?» dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku senin Rabbin, ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, amelleri kendilerine gosterilsin diye, boluk boluk fırlayıp cıkarlar"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre agırlıgınca bir hayır islerse, onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre agırlıgınca bir ser (kotuluk) islerse, o da onu gorur"
        }
    ]
}