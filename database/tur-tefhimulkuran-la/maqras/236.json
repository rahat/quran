{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok, yarılıp parcalandıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve ´kendi yaratılıs geregine uygun´ olarak Rabbine boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer, duzlendigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icinde olanları dısa atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve ´kendi yaratılıs geregine uygun´ olarak Rabbine boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, gercekten sen, hic durmaksızın Rabbine dogru bir caba harcayıp durmaktasın; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Artık kimin kitabı sag yanından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesap (sorgu) ile sorguya cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve kendi yakınlarına da sevinc icinde donmus olacaktır"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı ardından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O da, helak (yok olmay)ı cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Cılgın alevli atese girecek"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, (dunyada) kendi yakınları arasında sevincliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Dogrusu o, (Rabbine) bir daha donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; gercekten onun Rabbi, kendisini cok iyi gorendi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, safak vaktine yemin ederim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve toplayıp tasıdıgı seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ondordune girdigi zaman aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz, gercekten tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Su halde onlara ne oluyor ki iman etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur´an okundugunda secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine, o nankorler, yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, onların iclerinde saklı tutmakta olduklarını daha iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Bu durumda sen, onlara acıklı bir azab ile mujde ver"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip salih amellerde bulunanlar baska; onlar icin kesintisi olmayan bir ecir (mukafat) vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burcları olan goge andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "O vadedilen gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sahid olana (gorene) ve sahid olunana (gorulene)"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahrolsun Ashab-ı Uhdud"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "´Tutusturucu yakıt dolu o ates,´"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani kendileri (ates hendeginin) cevresinde oturmuslardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve mu´minlere yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Kendileri onlardan, yalnızca ´ustun ve guclu olan,´ ogulen Allah´a iman ettiklerinden dolayı intikam alıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Ki O (Allah), goklerin ve yerin mulku O´nundur. Allah (c.c.) her seyin uzerinde sahid olandır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Gercek su ki, mu´min erkeklerle mu´min kadınlara iskence (fitne) uygulayanlar sonra da tevbe etmeyenler (yok mu); iste onlar icin cehennem azabı vardır ve yakıcı azab onlar icindir"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Suphesiz iman edip de salih amellerde bulunanlara gelince; onlar icin de altından ırmaklar akan cennetler vardır. Iste buyuk ´kurtulus ve mutluluk´ budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Dogrusu, Rabbinin ´zorlu yakalayısı´ siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Cunku O, ilkin var eden, (sonra dirilterek) dondurecek olandır"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, cok bagıslayandır, cok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arsın sahibidir; Mecid (pek yuce) dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Her diledigini yapıp gerceklestirendir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud (ordularının)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Hayır; kufretmekte olanlar, (kesintisiz) bir yalanlama icindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise, onları arkalarından sarıp kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır; o (Kitap), ´serefli ustun´ olan bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Goge ve tarık´a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık´ın ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(Karanlıgı) Delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Uzerinde gozetleyici koruyucu bulunmayan hicbir nefis (kimse) yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Insan bir baksın, hangi seyden yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Dokulup atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(Bu su,) Bel kemigi ile kaburgalar arasında(ki organlar)dan cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Hic suphesiz (Allah,) onu yeniden dondurmege guc yetirendir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların orta yere cıkarılacagı gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun ne gucu vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Donuslu olan goge andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Yarılan yere de"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Hic suphesiz o (Kur´an), ayırdeden bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Dogrusu onlar, hileli bir duzen planlayıp kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir duzen kurup hazırlamaktayım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen simdi kufretmekte olanlara bir muhlet ver, kendilerine az bir sure tanı"
        }
    ]
}