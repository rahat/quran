{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Birbirlerine hangi seyi sorup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O buyuk haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki kendileri hakkında anlasmazlık icindedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, yakında bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır; yakında bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz, yeryuzunu bir dosek kılmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu bir gecim vakti kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Sizin ustunuze de sapasaglam yedi gok bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Parıldadıkca parıldayan bir kandil (gunes) kıldık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkıp suyu cıkaran (bulut)lardan da ´bardaktan bosanırcasına bir su´ indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Bununla taneler ve bitkiler bitirip cıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine sarmas dolas bahceleri de"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Suphesiz o hukum (fasl) gunu, belirlenmis bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a ufurulecegi gun, artık siz dalga dalga geleceksiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "O sırada gok acılmıs ve kapı kapı olmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulmus, artık bir serab oluvermistir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Gercekten cehennem, bir gozetleme yeridir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Taskınlık edip azanlar icin son bir varıs yeridir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Butun zamanlar boyunca icinde kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne serinlik tadacaklar, ne de bir icecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Kaynar sudan ve irinden baska"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(Islediklerine) Uygun olan bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Dogrusu onlar, hesaba cekileceklerini ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Bizim ayetlerimizi de yalanlayabildikleri kadar yalanlıyorlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Oysa biz, her seyi yazıp saymısızdır"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Simdi tadın. Size artık azabtan baskasını artırmayacagız"
        }
    ]
}