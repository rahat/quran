{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok, catlayıp yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar, dagılıp yayıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler, fıskırtılıp tasırıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Ve kabirlerin ici ´desilip dısa atıldıgı´ zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(Artık her) Nefis, onceden takdim ettiklerini ve ertelediklerini bilip ogrenmistir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, ´ustun kerem sahibi´ olan Rabbine karsı seni aldatıp yanıltan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Ki O, seni yarattı, ´sana bir duzen icinde bicim verdi´ ve seni itidal uzere kıldı"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi bir surette seni tertib etti"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Asla, Hayır; siz dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa gercekten sizin uzerinizde koruyucular var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "´Serefli ustun´ yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Her yapmakta oldugunuzu bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Hic suphesiz ebrar olanlar, elbette nimetler(le donatılmıs cennetler) icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ve hic suphesiz facir (kotu) olanlar da, elbette cılgınca yanan atesin icindedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Onlar, din gunu oraya yollanırlar"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ve kendileri ondan ayrılıp kaybolacak degildirler"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gununu sana bildiren sey nedir"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ve yine din gununu sana bildiren sey nedir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Hicbir nefsin bir baska nefse herhangi bir seye guc yetiremeyecegi gundur; o gun emir yalnızca Allah´ındır"
        }
    ]
}