{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, aya andolsun"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Donup gittigi zaman geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Agardıgı zaman sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Gercekten o, buyuk (musibet)lerden biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Beser (insan) icin bir uyarıp korkutmadır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizlerden one gecmek veya geride kalmak isteyenler icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis, kazanmakta olduklarına karsılık olmak uzere bir rehinedir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak Ashab-ı Yemin (sag ehli) haric"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennetlerdedirler; birbirlerine sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suclu gunahkarları"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "«Sizi su cehenneme surukleyip iten nedir?»"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar: «Biz namaz kılanlardan degildik» dediler"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "«Yoksula da yedirmezdik.»"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "«(Batıla ve tutkulara) Dalıp gidenlerle biz de dalar giderdik.»"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "«Din (hesap ve ceza) gununu yalan sayıyorduk.»"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "«Sonunda yakin (kesin bir gercek olan olum) gelip bize cattı.»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık, sefaat edenlerin sefaati onlara bir yarar saglamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Buna ragmen, bunlara ne oluyor ki ogutten yuz cevirip duruyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki onlar, urkmus yaban esekleri gibidirler"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan korkup kacmıslar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır; onlardan her biri, kendisine acılmıs sahifelerin verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, onlar hic suphesiz ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Gercek (su ki), o (Kur´an), elbette bir oguttur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Artık kim dilerse, ogut alıp dusunur"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Allah dilemedikce, onlar ogut almazlar; takvanın sahibi (onu kabul etmeye ehil olan) O´dur, magfiretin sahibi (bagıslamaya ehil olan da) O´dur"
        }
    ]
}