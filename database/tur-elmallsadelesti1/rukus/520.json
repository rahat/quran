{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun şiddetle çekip çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Usulcacık çekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp yüzüp gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarışıp geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken bir iş çevirenlere kasem olsun (ki kıyamet var)"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün deprem sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Onu ikinci bir sarsıntı izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Yürekler vardır, o gün kaygıdan hoplar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözler kalkmaz saygıdan"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz tekrar eski halimize mi döndürülecekmişiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "«Biz, çürümüş kemikler olduktan sonra ha?»"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "«Öyleyse bu çok zararlı bir dönüştür.» dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Fakat o bir tek haykırıştır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Bir de bakarsın hepsi meydandadır"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona kutsal vaadi Tuva´da seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "«Haydi, demişti, git Firavun´a, çünkü o çok azdı.»"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: İster misin arınasın"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbinin yoluna ileteyim de ondan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Musa Firavun´a o büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat Firavun yalanladı, karşı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra koşarak dönüp gitti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken adamlarını topladı da bağırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "«Ben sizin en yüce Rabbinizim» dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu tuttu, dünya ve ahiret azabıyla yakalayıverdi"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Kuşkusuz bunda, saygı duyacaklar için bir ibret vardır"
        }
    ]
}