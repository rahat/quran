{
    "rukus": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatılıp düzlendiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde ne varsa attığı ve tamamen boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Kuşkusuz sen Rabbine doğru çaba üstüne çaba sarfetmektesin, nihayet O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O vakit kitabı sağ eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "«Yetiş ey ölüm!» diye bağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o ailesi içinde sevinçli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Hiç Rabbine dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır Rabbi onu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Şimdi, yemin ederim o şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve içinde barındırdığı şeylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Derlendiği zaman o aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar neden acaba iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karşılarında Kur´ân okunduğu vakit secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine o nankörler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah içlerinde sakladıklarını biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara elem verici bir azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi ameller işleyenler başkadır. Onlara tükenmez bir ecir vardır"
        }
    ]
}