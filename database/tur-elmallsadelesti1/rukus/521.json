{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Yaratılışça siz mi daha çetinsiniz, yoksa gök mü? Onu Allah bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Tavanını yükseltti, onu bir düzene koydu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, kuşluğunu çıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra da yeryüzünü döşedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlağını çıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dağlarını oturttu"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın geçimi için"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Fakat o her şeyi bastıran büyük felaket geldiği vakit"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O, insanın neyin peşinde koştuğunu anladığı gün"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Gören kimseler için cehennem hortlatıldığı vakit"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık her kim azgınlık etmiş"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dünya hayatını tercih etmişse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Kuşkusuz onun varacağı yer cehennemdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kim de Rabbinin divanında durmaktan korkmuş, nefsini boş heveslerden menetmiş ise"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Kuşkusuz onun varacağı yer cennettir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana o kıyameti soruyorlar, ne zaman kopacak diye"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen nerde, onu anlatmak nerde"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun son ilmi Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkacak olanları uyarıcısın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onlar o kıyameti görecekleri gün sanki dünyada bir akşam veya kuşluğundan başka durmamışa dönecekler"
        }
    ]
}