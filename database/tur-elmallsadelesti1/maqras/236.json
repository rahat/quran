{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatılıp düzlendiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde ne varsa attığı ve tamamen boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Kuşkusuz sen Rabbine doğru çaba üstüne çaba sarfetmektesin, nihayet O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O vakit kitabı sağ eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "«Yetiş ey ölüm!» diye bağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o ailesi içinde sevinçli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Hiç Rabbine dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır Rabbi onu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Şimdi, yemin ederim o şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve içinde barındırdığı şeylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Derlendiği zaman o aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar neden acaba iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karşılarında Kur´ân okunduğu vakit secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine o nankörler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah içlerinde sakladıklarını biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara elem verici bir azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi ameller işleyenler başkadır. Onlara tükenmez bir ecir vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlar sahibi gökyüzüne"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Vaad olunan o güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şahitlik edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendeğin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O çıralı ateşin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani o ateşin başına oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Müminlere kızmalarının sebebi de, onların yalnız çok güçlü ve övgüye lâyık olan Allah´a iman etmeleri idi"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, göklerin ve yerin hükümranlığı O´nundur ve Allah her şeye şahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "İnanan erkek ve kadınlara işkence yapıp sonra da tevbe etmeyenlere cehennem azabı ve yangın azabı vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İnanan ve iyi amel yapanlar için de altından ırmaklar akan cennetler vardır. İşte büyük kurtuluş odur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Kuşkusuz Rabbinin yakalaması serttir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Yoktan o yaratır ve tekrar o diriltir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bununla beraber çok bağışlayandır, çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arş´ın sahibidir, yücedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediğini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların kıssası sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud´un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Fakat o inkarcılar hâlâ bir yalanlama içinde"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Oysa Allah onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır o şerefli bir Kur´ân´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o göğe ve Târık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Târık nedir, bildin mi"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, karanlığı delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir nefis yoktur ki başında bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun için insan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "O su, erkeğin sulbü ile kadının göğüs kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette Allah´ın onu döndürmeye gücü yeter"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gün bütün sırlar yoklanıp, meydana çıkarılır"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "İnsanın o gün ne bir gücü vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüşlü göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "O yarılıp çatlayan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kuşkusuz Kur´ân, ayırıcı bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, kâfirler hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine karşılık veririm"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için sen kâfirlere mühlet ver, onlara az bir zaman tanı"
        }
    ]
}