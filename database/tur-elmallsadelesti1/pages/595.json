{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneş´e ve onun parıltısına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Güneş´in ardından gelen Ay´a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Güneş´i açıp ortaya çıkaran gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu örten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu biçimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kötülük ve takva kabiliyetini verene yemin olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Elbette nefsini temizleyip parlatan kurtulmuştur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gömen de ziyan etmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlığıyla Hakk´ı yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri atılınca"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın Rasulü (Salih peygamber) onlara: «Allah´ın devesini ve onun su nöbetini gözetin.» demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onlar peygamberi yalanlayıp deveyi kestiler. Rableri de günahlarını başlarına geçiriverdi de orayı dümdüz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Öyle ya, Allah bu işin sonundan korkacak değil ya"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Örttüğü zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Açıldığı zaman gündüze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana and olsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Gerçekten sizin işiniz başka başkadır"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Bundan böyle her kim malını hayır için verir ve korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve en güzel olanı doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Biz onu en kolay yola muvaffak kılacağız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Kim de cimrilik eder ve kendini hiçbir şeye ihtiyacı kalmamış görür"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en güzeli de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da en zor yola hazırlarız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Çukura yuvarlandığı zaman malı onu kurtaramayacak"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Doğru yolu göstermek muhakkak bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Kuşkusuz ahiret de dünya da bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi köpürdükçe köpüren bir ateşe karşı uyardım"
        }
    ]
}