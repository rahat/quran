        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o göğe ve Târık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Târık nedir, bildin mi"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, karanlığı delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir nefis yoktur ki başında bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun için insan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "O su, erkeğin sulbü ile kadının göğüs kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette Allah´ın onu döndürmeye gücü yeter"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gün bütün sırlar yoklanıp, meydana çıkarılır"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "İnsanın o gün ne bir gücü vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüşlü göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "O yarılıp çatlayan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kuşkusuz Kur´ân, ayırıcı bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, kâfirler hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine karşılık veririm"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için sen kâfirlere mühlet ver, onlara az bir zaman tanı"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp düzene koyan O´dur"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir edip hidayeti gösteren O´dur"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Otlağı çıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu karamsı bir sel köpüğü haline getiren O´dur"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Bundan böyle sana Kur´ân´ı okutacağız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başkadır. Çünkü o açığı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Onun için öğüt ver, eğer öğüt fayda verirse"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygısı olan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Pek bedbaht olan da ondan kaçınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O ki, en büyük ateşe girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra ne ölecek onda, ne de hayat bulacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu felah buldu (günahtan) temizlenen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        }
    ]
}