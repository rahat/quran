{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "سوگند به فرستادگان پیاپی‌"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "و تندبادهای سخت‌"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "و سوگند به بادهای پراکنده ساز [ابرها]"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "و جداسازان [حق و باطل‌]"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "و سوگند به فرشتگان وحی‌آور"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "برای اتمام حجت و هشدار"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "که آنچه به شما وعده داده شده است، رخ دادنی است‌"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "پس چون ستارگان تیره شوند"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "و چون آسمان شکافته شود"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "و چون کوهها بر باد رود"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "و چون پیامبران را میقات معین کنند"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "برای کدامین روز زمان داده شود؟"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "برای روز داوری‌"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "و تو چه دانی روز داوری چیست؟"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "آیا پیشینیان را نابود نکردیم؟"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "سپس به دنبال آنان واپسینان را روان نساختیم؟"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "با گناهکاران چنین رفتار کنیم‌"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "آیا شما را از آبی بی‌مقدار نیافریده‌ایم؟"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "که سپس آن را در جایگاهی استوار قرار دادیم‌"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا هنگامی معین‌"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "پس سامان دادیم و چه نیک سامانگریم‌"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "آیا زمین را فراگیر نساختیم؟"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "چه برای زندگان، چه برای مردگان‌"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "و در آن کوههای بلند پدید آوردیم و به شما آبی شیرین نوشاندیم‌"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "به سوی چیزی که انکارش می‌کردید بروید"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "به سوی دودی دارای سه شاخه بروید"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "که نه سایه‌گستر است و نه از لهیب آتش باز می‌دارد"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "آن شراره‌هایی همچون کوشک می‌پراکند"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گویی شترانی زرد سیه‌تاب هستند"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "این روزی است که سخن نگویند"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "و به ایشان اجازه ندهند که عذرخواهی کنند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "این روز داوری است، شما و پیشینیان را گرد آورده‌ایم‌"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "اگر نیرنگی دارید برای من بسگالید"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "در چنین روز وای بر منکران‌"
        }
    ]
}