{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "چنین نیست [که گویند]، سوگند به ماه‌"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "و شب چون بگذرد"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "[و] سوگند به صبح چون روشن شود"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "آن یکی از سترگهاست‌"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "هشداردهنده بشر است‌"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "برای هر کس از شما که خواهد [در راه حق و ایمان‌] پیشتر آید، یا بازپس ماند"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "هر کس در گرو کردار خویش است‌"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "مگر اصحاب یمین‌"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "که در بوستانهایی [هستند و] همپرسی می‌کنند"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "از گناهکاران‌"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "که چه چیزی شما را به راه دوزخ کشاند؟"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "گویند از نمازگزاران نبودیم‌"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "و بینوایان را هم اطعام نمی‌کردیم‌"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "و با ژاژخایان ژاژخایی می‌کردیم‌"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "و روز جزا را دروغ می‌انگاشتیم‌"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "تا آنکه مرگ به سراغمان آمد"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "حال شفاعت شفیعان سودشان ندهد"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "ایشان را چه می‌شود که از اندرز رویگردانند"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گویی درازگوشانی رمانند"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "که از شیر می‌گریزند"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلکه هر یک از ایشان می‌خواهد که به او نامه‌هایی سرگشاده دهند"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "حاشا، حق این است که از آخرت نمی‌ترسند"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "حاشا، آن پندآموزی است‌"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "و هر کس خواهد از آن پندگیرد"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "و پند نگیرند مگر آنکه خدا خواهد، اوست که سزاوار پرهیز ورزیدن است، و سزاوار آمرزگاری‌"
        }
    ]
}