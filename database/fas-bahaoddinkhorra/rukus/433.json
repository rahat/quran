{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "همانا درخت زقوم"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "خوراک گناهکار[ان‌] است‌"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "که مانند فلز گداخته در شکمها می‌جوشد"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "مانند جوشیدن آب گرم‌"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "[درباره هر گناهکار گوییم‌] او را بگیرید و به میانه دوزخش بکشید"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "سپس بر فراز سرش از عذاب آب گرم فرو ریزید"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "[و بگوییدش‌] بچش که تو [به خیال خودت‌] گرانقدر گرامی هستی‌"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "این همان است که به آن شک داشتید"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "بی‌گمان پرهیزگاران در مقامی امن هستند"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "در میان باغها و چشمه‌ساران‌"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "جامه‌هایی از ابریشم نازک و ابریشم ستبر در بر کرده، رو به روی یکدیگرند"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "آری چنین است، و آنان را با حوریان درشت چشم همسر می‌گردانیم‌"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "در آنجا هر میوه‌ای که خواهند در کمال آرامش طلب کنند"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "در آنجا [طعم‌] هیچ مرگی جز مرگ نخستین نچشند، و [خداوند] ایشان را از عذاب دوزخ در امان دارد"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "این بخششی از سوی پروردگار توست، این همان رستگاری بزرگ است‌"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "جز این نیست که آن را به زبان تو به آسانی روان ساخته‌ایم، باشد که پند گیرند"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "منتظر باش که آنان نیز منتظرند"
        }
    ]
}