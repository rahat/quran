{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "بخوان به نام پروردگارت که آفریده است‌"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "که انسان را از [نطفه و سپس‌] خون بسته آفریده است‌"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "بخوان و پروردگار تو بس گرامی است‌"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "همان که با قلم [و کتابت انسان را] آموزش داد"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "به انسان چیزی را که نمی‌دانست، آموخت‌"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "چنین نیست، بی‌گمان انسان سر به طغیان برآورد"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "از این که خود را بی‌نیاز [و توانگر] بیند"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "همانا بازگشت به سوی پروردگار توست‌"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "آیا نگریسته‌ای کسی را که باز می‌دارد"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "بنده‌ای را که به نماز برخیزد"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "آیا اندیشیده‌ای که اگر [پیامبر و پیرو او] بر طریق هدایت باشد"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "یا امر به پرهیزگاری کند [بر حق است‌]"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "آیا اندیشیده‌ای که اگر انکار پیشه کند و روی برتابد [فقط خود را نابود سازد]"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "آیا نمی‌داند که همانا خداوند [همه چیز را] می‌بیند؟"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "حاشا، اگر از آن کار دست بر ندارد، موی پیشانی او را به سختی بگیریم‌"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "موی پیشانی دروغ‌زن خطاپیشه را"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "پس [مذبوحانه‌] هم‌مجلسانش را [به کمک‌] بخواند"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "ما نیز آتشبانان دوزخ را فراخوانیم‌"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "حاشا، از او پیروی مکن، و سجده بر و تقرب بجوی‌"
        }
    ]
}