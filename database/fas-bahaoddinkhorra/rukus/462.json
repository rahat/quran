{
    "rukus": [
        {
            "chapter": 53,
            "verse": 33,
            "text": "آیا کسی را که رویگردان شد نگریسته‌ای‌"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "و اندکی بخشید و باز ایستاد"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "آیا نزد او علم غیب است و او [حقایق را] می‌بیند؟"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "یا از آنچه در صحیفه‌های موسی است، آگاهش نکرده‌اند"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "و [صحیفه‌های‌] ابراهیم که عهد به جای آورد"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "که هیچ بر دارنده‌ای بار گناه دیگری را بر ندارد"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "و اینکه برای انسان هیچ چیز نیست مگر آنچه کوشیده است‌"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "و حاصل کوشش او زودا که دیده شود"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "سپس پاداش دهند او را به پاداشی هر چه وافی‌تر"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "و اینکه سرانجام [همه کار و همه چیز] با پروردگار توست‌"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "و اوست که می‌خنداند و می‌گریاند"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "و اوست که می‌میراند و زنده می‌دارد"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "و اوست که زوج نرینه و مادینه را آفرید"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "از نطفه‌ای که [در رحم‌] فرو می‌ریزد"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "و اینکه پدید آوردن نشاه آخرت با اوست‌"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "و اوست که بی‌نیاز کند و سرمایه دهد"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "و اوست که پروردگار شعری است‌"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "و اوست که عاد نخستین را نابود کرد"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "و ثمود را نیز، باقی نگذاشت‌"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "و نیز پیش از آن قوم نوح را، که ایشان ستمکارتر و سرکش‌تر بودند"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "و سرزمین نگونسار را واژگون کرد"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "و آن را چنانکه باید، پوشیده داشت‌"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "پس به کدامیک از نعمتهای پروردگارت شک و شبهه داری؟"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "این هشداردهنده‌ای از هشداردهندگان نخستین است‌"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "[قیامت‌] فرارسنده، فرارسید"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "جز خداوند، برای آن آشکارکننده‌ای نیست‌"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "پس آیا از این سخن عجب می‌کنید؟"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "و می‌خندید و نمی‌گریید؟"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "و شمایید که بازی کنانید"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "پس برای خداوند سجده برید و پرستش کنید"
        }
    ]
}