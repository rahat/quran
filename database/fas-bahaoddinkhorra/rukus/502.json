{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "خواهنده‌ای عذابی رخ دادنی را طلب کرد"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "که برای کافران است [و] بازدارنده‌ای ندارد"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "از جانب خداوند صاحب درجات‌"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "که فرشتگان و روح در روزی که به اندازه پنجاه هزار سال [دنیوی‌] است به سوی او فرا می‌روند"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "پس صبری نیکو پیشه کن‌"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "آنان آن را دوردست می‌بینند"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "و ما نزدیک می‌بینیمش‌"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "روزی که آسمان چون فلز گداخته شود"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "و کوهها همچون پشم رنگین گردد"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "و هیچ خویشاوندی از حال خویشاوندی نپرسد"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "در حالی که به همدیگر نشان داده شوند، گناهکار آرزو کند کاش عذاب چنین روزی را،"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "با فدا کردن پسرانش و همسرش و برادرش باز خرد"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "همچنین خاندانش که به او سر و سامان داده است‌"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "همچنین هر کس که در روی زمین است، آنگاه باز رهاندش‌"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "حاشا، آن آتشی زبانه‌زن است‌"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "برکننده پوست سر"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "که هر کس را که [به حق‌] پشت کرد و [از ایمان‌] روی گرداند، به خود می‌خواند"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "همان کسی که مال اندوخت و جا به جا کرد"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "بی‌گمان انسان ناشکیب آفریده شده است‌"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "چون شر به او رسد، بی‌تاب است‌"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "و چون خیر به او رسد، بازدارنده است‌"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "مگر نمازگزاران‌"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "آنان که در نمازهایشان پیگیرند"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "و کسانی که در اموالشان حقی معین است‌"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "برای خواهنده و بی‌بهره‌"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "و کسانی که روز جزا را باور می‌دارند"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "و کسانی که از عذاب پروردگارشان بیمناکند"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "بی‌گمان عذاب پروردگارشان، بدون ایمنی است‌"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "و کسانی که ناموسشان را حفظ می‌کنند"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "مگر در برابر همسرانشان یا ملک یمینهایشان، که در این صورت سرزنش ناپذیرند"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "پس هر کس فراتر از این بجوید، آنانند که تجاوزکارند"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "و کسانی که در برابر امانتها و پیمانهایشان رعایتگرند"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "و کسانی که در مقام گواهی دادنهایشان ایستاده‌اند"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "و کسانی که بر نمازهایشان مواظبند"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "اینان در بوستانهایی، گرامی داشته شده‌اند"
        }
    ]
}