{
    "rukus": [
        {
            "chapter": 37,
            "verse": 114,
            "text": "و به راستی بر موسی و هارون منت نهادیم [و نعمت دادیم‌]"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "آن دو و قومشان را از گرفتاری بزرگ رهانیدیم‌"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "و آنان را یاری دادیم و آنان بودند که پیروز شدند"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "و به آن دو، کتاب روشنگر بخشیدیم‌"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "و آن دو را به راه راست هدایت کردیم‌"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "و برای آنان در میان واپسینان نام نیک نهادیم‌"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سلام بر موسی و هارون‌"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "ما بدین‌سان نیکوکاران را جزا می‌دهیم‌"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "که آن دو از بندگان مؤمن ما بودند"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "و همانا الیاس از پیامبران بود"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "چنین بود که به قومش گفت آیا پروا نمی‌کنید"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "آیا بعل را می‌پرستید و بهترین آفریدگاران را رها می‌کنید؟"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "خداوند را، که پروردگار شما و پروردگار پدران نخستین شماست؟"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "پس او را دروغگو شمردند و ایشان [برای حساب و عذاب‌] حاضر شدگانند"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "مگر آن بندگان خداوند که اخلاص یافته‌اند"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "و برای او در میان واپسینان نام نیک نهادیم‌"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "و سلام بر آل یاسین‌"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "ما بدین‌سان نیکوکاران را جزا می‌دهیم‌"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "او از بندگان مؤمن ما بود"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "و همانا لوط از پیامبران بود"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "چنین بود که او و خانواده‌اش، همگی را، رهایی دادیم‌"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "مگر پیرزنی که جزو واپس‌ماندگان [در عذاب‌] بود"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "سپس دیگران را نابود کردیم‌"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "و خود شما بر [آثار] آنان بامدادان می‌گذرید"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "و نیز شامگاهان، پس آیا تعقل نمی‌کنید؟"
        }
    ]
}