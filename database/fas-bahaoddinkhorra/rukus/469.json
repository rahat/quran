{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "چون واقعه بزرگ [قیامت‌] واقع شود"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "در وقوع آن دروغی نیست‌"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "هم فرو دارنده‌[ی کافران‌] است و هم فرادارنده‌[ی مؤمنان‌]"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "آنگاه که زمین به جنبشی سخت جنبانده شود"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و کوهها سخت خرد و ریز شود"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "و همچون غباری پراکنده گردد"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما گروههای سه‌گانه‌ای باشید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "[یکی‌] اصحاب یمین، و چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و [دیگری‌] اصحاب شمال، و چه حال دارند اصحاب شمال‌"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و [سومین‌] سابقان که پیشتازانند"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "اینانند که مقرب‌اند"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در بهشتهای پرناز و نعمت‌"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروهی بسیار از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهای گوهرنشان‌"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "رودرروی هم بر آنها تکیه زده‌اند"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "جاودانه جوانان بر گرد آنان می‌گردند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "همراه با کوزه‌ها و ابریقها و جامهایی از شراب جاری‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "که [بهشتیان‌] از آن سردرد نگیرند و بد مست نشوند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌هایی از آنچه بر می‌گزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغ از آنچه خوش دارند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و حوریان چشم درشت‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "که همانندان مروارید نهفته‌اند"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "این پاداش کاری است که کرده‌اند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آنجا [سخنان‌] بیهوده و [گزاف‌] گناه‌آلود نشنوند"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "نشنوند مگر سخنی که سلام است و سلام‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و اصحاب یمین چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در جوار درختان سدر بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزهای توبرتو"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه گسترده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه بسیار"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "که نه پایان‌پذیر است و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و دوشیزگان گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "ما ایشان را به ابداع آفریده‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "و دوشیزه‌شان داشته‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "همسر دوست و هم سن و سال‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "خاص اصحاب یمین‌"
        }
    ]
}