{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "سوگند به روز قیامت می‌خورم‌"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "و سوگند به نفس ملامت‌گر"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "آیا انسان چنین می‌پندارد که هرگز استخوانهای [پوسیده و پراکنده‌] او را گرد نمی‌آوریم؟"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "حق این است که تواناییم بر این که سرانگشتهای او را فراهم آوریم‌"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بلکه انسان می‌خواهد در مهلتی که در پیش دارد، فسق و فجور کند"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "[از سر استکبار] می‌پرسد روز قیامت چه وقت است؟"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "آنگاه که دیدگان خیره شود"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "و ماه تیره شود"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "و خورشید و ماه فرا یکدیگر آورده شوند"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "انسان گوید در چنین روزی گریزگاه کجاست؟"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "حاشا، پناهی نیست‌"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "سرانجام [همه چیز و همه کار] با پروردگار توست‌"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "در این روز انسان را از آنچه پیش فرستاده یا باز پس داشته است آگاه سازند"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "حق این است که انسان بر نفس خود بصیر است‌"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "ولو بهانه‌هایش را در میان آورد"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "زبانت را به [بازخوانی وحی‌] مجنبان که در کار آن شتاب کنی‌"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "گردآوری و بازخوانی آن بر عهده ماست‌"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "و چون آن را باز خوانیم، از بازخوانی‌اش پیروی کن‌"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "سپس شرح و بیان آن بر عهده ماست‌"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "حاشا، حق این است که بهره زودیاب [دنیوی‌] را دوست دارید"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "و [بهره دیریاب‌] آخرت را فرو می‌گذارید"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "در چنین روز، چهره‌هایی تازه و خرم باشد"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "به سوی پروردگارشان نگران‌"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "و در چنین روز چهره‌هایی دژم باشد"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "که می‌داند بلایی کمرشکن بر سر او آید"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "حاشا، چون جان به گلوگاهها رسد"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "و گفته شود کیست افسونگر [درمانگر]"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "و به یقین داند که هنگام جدایی است‌"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "و هنگامه بالا گیرد"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "در چنین روز سیر و سرانجام به سوی پروردگار توست‌"
        }
    ]
}