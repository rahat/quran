{
    "rukus": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "خداوند رحمان‌"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "قرآن را آموزش داد"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "انسان را آفرید"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "به او زبان آموخت‌"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "خورشید و ماه، حسابی [معین‌] دارند"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "و گیاه و درخت سجده می‌کنند"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "و آسمان را برافراشت و معیار و میزان مقرر داشت‌"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "از بهر آنکه در ترازو از حد تجاوز مکنید"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "و وزن را دادگرانه به کار آورید و در ترازو کمی و کاستی میاورید"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "و زمین را برای جهانیان پدید آورد"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "در آن [همه گونه‌] میوه و خرمای پوشش‌دار هست‌"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "و دانه برگ‌دار و گیاه خوشبو"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "انسان را از گل خشک همچون سفال، آفرید"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "و جن را از زبانه آتش پدید آورد"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "پروردگار مشرق‌ها و مغرب‌ها"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "دو دریا را که به هم می‌رسند درآمیخت‌"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "در میان آنها برزخی است که به همدیگر تجاوز نکنند"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "از آن دو در و مرجان بیرون می‌آید"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "و او راست کشتیهای بادبان برافراشته که چون کوهها در دریا روانند"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        }
    ]
}