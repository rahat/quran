{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "فزون‌طلبی شما را بازی داد"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا آنکه با گورها رو در رو شدید"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "حاشا، زودا که بدانید"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "باز حاشا، زودا که بدانید"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "حاشا اگر به علم‌الیقین بدانید"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "بی‌شبهه دوزخ را ببینید"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "آری آن را به عین‌الیقین بنگرید"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "سپس در چنین روز از شما درباره نعمتها[ی کفران شده دنیا] بازخواست شود"
        }
    ]
}