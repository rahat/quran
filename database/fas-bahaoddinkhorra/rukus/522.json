{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "ترشرویی کرد و روی بر تافت‌"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "از اینکه آن نابینا به نزد او آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانی چه بسا او پاکدلی ورزد"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا پندگیرد و پندش سود بخشد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما کسی که بی‌نیازی نشان می‌دهد"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "[چرا] تو به او می‌پردازی‌"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و اگر هم پاکدلی پیشه نکند، ایرادی بر تو نیست‌"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما کسی که شتابان به سویت آمد"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "و او خشیت می‌ورزد"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو از او به دیگری می‌پردازی‌"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "چنین نیست، آن پندآموزی است‌"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "هر که خواهد آن را یاد کند"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در میان صحیفه‌های ارجمند است‌"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "که بلندمرتبه است و پاک داشته‌"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست نویسندگانی‌"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "که گرامیانند و نیکان‌"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر انسان [کافر] چقدر کافرکیش است‌"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "مگر از چه چیزی او را آفریده است‌"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "او را از نطفه‌ای آفریده است و سر و سامان بخشیده است‌"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه را بر او آسان داشته است‌"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "سپس او را میرانید و او را در گور کرد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هر زمان که خواست او را برانگیزد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "حاشا، او آنچه به او فرمان داده بود، انجام نداد"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس باید انسان به خوراک خویش بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "ما آب را به فراوانی فرو ریخته‌ایم‌"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمین را به نیکی برشکافته‌ایم‌"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "و در آن دانه [ها] رویانده‌ایم‌"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و نیز انگور و سبزیجات‌"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و درخت زیتون و خرما"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و بوستانهای انبوه‌"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و میوه و علف‌"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "کالایی برای شما و برای چارپایانتان‌"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "چون بانگ گوش‌فرسا در آید"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی که انسان از برادرش بگریزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادرش و پدرش‌"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و همسرش و پسرانش‌"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "برای هر کس از آنان در چنین روز کاری باشد که او را از همه باز دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "در چنین روز چهره‌هایی تابناک باشد"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شادمان‌"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و در چنین روز بر چهره‌هایی غبار باشد"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تیرگی آنها را فرو گیرد"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اینان همان کافرکیشان نافرمانند"
        }
    ]
}