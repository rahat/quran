{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "آیا نمی‌داند که چون آنچه در گورهاست زیر و زبر شود"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "و راز دلها آشکار گردانیده شود"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "بی‌گمان پروردگارت در چنین روز از حال آنان آگاه است‌"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "درهم کوب‌"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "درهم کوب چیست؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه دانی که درهم کوب چیست؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزی که مردم مانند پروانه‌های پراکنده باشند"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و کوهها مانند پشمهای زده باشند"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "در آن حال هر کس کفه‌ها[ی اعمال خیر]ش سنگینی کند"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "او در زندگانی پسندیده است‌"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما کسی که کفه‌هایش سبکی یابد"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "بازگشتگاه او دوزخ است‌"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو چه دانی آن چیست؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشی است [بس‌] سوزان‌"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "فزون‌طلبی شما را بازی داد"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا آنکه با گورها رو در رو شدید"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "حاشا، زودا که بدانید"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "باز حاشا، زودا که بدانید"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "حاشا اگر به علم‌الیقین بدانید"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "بی‌شبهه دوزخ را ببینید"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "آری آن را به عین‌الیقین بنگرید"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "سپس در چنین روز از شما درباره نعمتها[ی کفران شده دنیا] بازخواست شود"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "سوگند به روزگار"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "که بی‌گمان انسان در زیانکاری است‌"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "مگر کسانی که ایمان آورده‌اند و کارهای شایسته کرده‌اند و همدیگر را به حق سفارش کرده‌اند، و همدیگر را به شکیبایی سفارش کرده‌اند"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "وای بر هر عیب‌جوی طعنه‌زن‌"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "همان که مالی گردآورد و شماره‌اش کرد"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "پندارد که مالش او را جاودانه می‌سازد"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "حاشا، بی‌شبهه به کام درهم شکن انداخته شود"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "و تو چه دانی که درهم شکن چیست‌"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "آتش الهی فروزان‌"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "همان که بر دلها راه یابد"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "بر ایشان لایه لایه فرو افتد"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "در ستونهایی بالا بلند"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "آیا ندانسته‌ای که پروردگارت با پیل‌سواران چگونه رفتار کرد؟"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "آیا نیرنگشان را بی‌اثر نساخت؟"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "و بر سر آنان پرندگانی فوج‌فوج فرستاد"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "که بر آنان سنگریزه‌هایی از سنگ گل فرو انداختند"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "و سرانجام آنان را مانند برگ کاه نیمه جویده ساخت‌"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "برای همبستگی قریش‌"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "همبستگیشان در کوچ زمستانی و تابستانی‌"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس باید صاحب این خانه را بپرستند"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "همان که ایشان را پس از گرسنگی [آذوقه و] خوراک داد و پس از ترس [و نگرانی‌]، ایمن داشت‌"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آیا ملاحظه کرده‌ای کسی را که روز جزا را انکار می‌کند؟"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "این همان کسی است که یتیم را می‌راند"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و بر اطعام بینوا، ترغیب نمی‌کند"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس وای بر آن نمازگزاران‌"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "همان کسانی که از نماز خویش غافلند"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "کسانی که ایشان [در نماز هم‌] ریاکاری می‌کنند"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و زکات را باز می‌دارند"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "ما به تو کوثر بخشیده‌ایم‌"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس برای پروردگارت نماز بگزار و قربانی کن‌"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "بی‌گمان دشمن تو بی‌سرانجام [و بلاعقب‌] است‌"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "بگو هان ای کافران‌"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "من معبود شما را نمی‌پرستم‌"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "و شما هم پرستندگان معبود من نیستید"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "و من پرستنده آنچه شما می‌پرستید نیستم‌"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "و شما هم پرستندگان معبود من نیستید"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "شما را دین شما، و مرا دین من‌"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "آنگاه که نصرت الهی و پیروزی فراز آید"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "و مردم را بینی که گروه گروه به دین الهی در آیند"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "پس سپاسگزارانه پروردگارت را نیایش کن و از او آمرزش بخواه که او بس توبه‌پذیر است‌"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "زیانکار باد دستان ابولهب، و خود او هم زیانکار شد"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "مالش و دستاوردش به کارش نیامد"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "زودا که به آتشی شعله‌ور در آید"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "و زنش هیزم‌کش [و آتش‌افروز معرکه‌] است‌"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "و ریسمانی از لیف خرمای تافته بر گردن دارد"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "بگو او خداوند یگانه است‌"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "خداوند صمد"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "نه فرزند آرد و نه از کسی زاده است‌"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و او را هیچ کس همتا نیست‌"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "بگو به پروردگار فلق پناه می‌برم‌"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از شر هر آنچه آفریده است‌"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از شر شب چون در آید"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از شر زنان افسونگر دمنده در گره‌ها"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "و از شر رشک‌بری که رشک برد"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "بگو به پروردگار مردم پناه می‌برم‌"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "فرمانروای مردم‌"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "خدای مردم‌"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از شر وسوسه‌گر پنهانکار"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "کسی که در دلهای مردم وسوسه می‌کند"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "اعم از جن و انسان‌"
        }
    ]
}