{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "از چه از همدیگر می‌پرسند؟"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "از خبر بزرگ‌"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "همانکه ایشان در آن اختلاف دارند"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "چنین نیست، زودا که بدانند"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "باز چنین نیست زودا که بدانند"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آیا زمین را زیرانداز نساخته‌ایم؟"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و کوهها را مانند میخها"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و شما را به صورت جفتها[ی گوناگون‌] آفریده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و خوابتان را مایه آرامش گردانده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و شب را همچون پوششی ساخته‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و روز را وقت تلاش معاش قرار داده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و برفرازتان هفت آسمان استوار برافراشته‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و چراغی درخشان پدید آورده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "و از ابرها آبی ریزان فرو فرستاده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا بدان دانه و گیاه برآوریم‌"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و بوستانهایی انبوه‌"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "بی‌گمان روز داوری، هنگامی معین است‌"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزی که در صور دمیده شود و فوج فوج بیایید"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "و آسمان گشوده شود و دروازه دروازه باشد"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و کوهها روان کرده شود و چون سرابی باشد"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "بی‌گمان جهنم کمینگاهی است‌"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "و بازگشتگاه سرکشان است‌"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "که روزگارانی در آن به سر برند"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "در آن نه خنکی بینند نه نوشابه‌ای چشند"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر آب جوش و چرکابه‌"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "که جزایی موافق [اعمال ایشان‌] است‌"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "آنان حساب و کتابی را امید نمی‌داشتند"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و آیات ما را سخت تکذیب می‌کردند"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "و هر چیزی را در نامه‌ای به شمار آورده‌ایم‌"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "پس بچشید که هرگز جز به عذابتان نمی‌افزاییم‌"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "بی‌گمان پرهیزگاران را رستگاری است"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "بوستانها و درختان انگور"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "و [حوریان‌] نارپستان همسال‌"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "و جامهای سرشار"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "در آنجا نه لغوی بشنوند و نه دروغی‌"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "پاداشی است از سوی پروردگارت و بخششی بسنده است‌"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "پروردگار آسمانها و زمین و مابین آنها که خدای رحمان است، و از جانب او اجازه سخن گفتن ندارند"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "روزی که روح [جبرئیل‌] و فرشتگان به صف ایستند و هیچ‌یک جز کسی که خداوند رحمان به او اجازه دهد، و صواب گوید، سخن نگویند"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "این روز واقعی است پس هر که خواهد بازگشتگاهی به سوی پروردگار خویش بجوید"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "ما شما را از عذابی نزدیک هشدار دادیم، از روزی که هر انسانی به [نتیجه‌] آنچه به دستان خویش پیش فرستاده است، بنگرد و کافر [از سر حسرت‌] گوید کاش من خاک بودم‌"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "سوگند به فرشتگانی که در گرفتن جان [کافران‌] به سختی کوشند"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "و سوگند به فرشتگانی که جان [مؤمنان‌] به نرمی گیرند"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "و سوگند به فرشتگانی که شنا کنان هبوط کنند"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "و سوگند به فرشتگان پیشتاز"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "و به فرشتگانی که کار سازند"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "روزی که [زمین‌] لرزنده بلرزد"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "و پیایند در پی آن آید"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "در چنین روز دلهایی ترسان و لرزان باشند"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "دیدگان ایشان فروشده‌"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "گویند آیا ما به حالت نخستین [زندگی‌] باز گردانده شویم‌"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "آنگاه که استخوانهایی پوسیده شدیم؟"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "گویند این در آن صورت بازگشتی زیانبار خواهد بود"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "آن همین یک بانگ یگانه است‌"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "آنگاه ایشان در هامون [رستاخیز] باشند"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "آیا داستان موسی به تو رسیده است؟"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "چون پروردگارش او را در وادی مقدس طوی ندا داد"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "[فرمود] به سوی فرعون برو که او سر به طغیان بر داشته است‌"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "و بگو آیا بر آن هستی که پاکدلی پیشه کنی؟"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "و تو را به سوی پروردگارت راه نمایم و خشیت یابی؟"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "و به او معجزه سترگ نشان داد"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "پس او انکار کرد و سرکشید"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "سپس شتابان روی برتافت‌"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "و [سپاه جادوگران را] گردآورد و ندا [به ادعا] در داد"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "و گفت من پروردگار برتر شما هستم‌"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "آنگاه خداوند به عقوبت [گناه‌] واپسین و نخستین او را فرو گرفت‌"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "بی‌گمان در این برای هر کس که خشیت داشته باشد، عبرتی است‌"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "آیا شما استوار آفریده‌ترید یا آسمان که آن را برافراشت‌"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "سقف آن را بلند برکشید و آن را استوار کرد"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "و شب آن را تاریک کرد و روز آن را برآورد"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "و بعد از آن زمین را گستراند"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "از آن آب و چراگاه بیرون آورد"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "و کوهها را استوار بداشت‌"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "برای برخورداری شما و چارپایانتان‌"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "آنگاه که هنگامه بزرگ فرارسد"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "روزی که انسان از آنچه کوشیده است، یاد آورد"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "و جهنم برای هر که درنگرد آشکار شود"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "آنگاه هر کس طغیان‌ورزیده باشد"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "و زندگانی دنیا را برگزیده باشد"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "بی‌شک جهنم جایگاه اوست‌"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "و اما هر کس که از ایستادن [در موضع حساب و حشر] در پیشگاه پروردگارش ترسیده و نفس را از هوی و هوس بازداشته باشد"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "بی‌گمان بهشت جایگاه اوست‌"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "از تو درباره قیامت پرسند که استقرار آن چه وقت است؟"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "تو در مقامی نیستی که از آن یاد کنی‌"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "منتهای علم آن با پروردگارت توست‌"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "تو فقط هشداردهنده کسی هستی که از آن بهراسد"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "روزی که آن را بنگرند گویی جز شبانگاهی یا بامدادش [در دنیا] به سر نبرده‌اند"
        }
    ]
}