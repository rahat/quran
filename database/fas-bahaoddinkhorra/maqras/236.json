{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "آنگاه که آسمان بشکافد"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "و به [امر] پروردگارش گوش بسپارد و خود چنین سزد"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "و آنگاه که زمین بازکشیده گردد"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "و هر چه در دل آن است بیرون اندازد و تهی گردد"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "و به [امر] پروردگارش گوش بسپارد و خود چنین سزد"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "هان ای انسان تو در راه پروردگارت سخت کوشیده‌ای [و رنج برده‌ای‌] و به لقای او نایل خواهی شد"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "اما هر کس که کارنامه‌اش به دست راستش داده شود"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "زودا که حسابی آسان، با او محاسبه گردد"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "و شادمان به سوی خانواده‌اش بازگردد"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "و اما هر کس که کارنامه‌اش از پس پشتش به او داده شود"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "زودا که زاری سر دهد"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "و به دوزخ در آید"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "چرا که او در میان خانواده‌اش [به ناحق‌] شادمان بود"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "و می‌پنداشت که هرگز [به قیامت‌] باز نگردد"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "آری بی‌گمان پروردگارش به [احوال‌] او بینا بود"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "پس سوگند می‌خورم به شفق‌"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "و به شب و آنچه گرد آورد"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "و سوگند به ماه چون کامل گردد"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "که شما از حالی به حالی دیگر در آیید"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "پس ایشان را چه می‌شود که ایمان نمی‌آورند"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "و چون بر آنان قرآن خوانند، به سجده نیفتند"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "بلکه کافران انکار می‌ورزند"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "و خداوند به آنچه در دل می‌دارند داناتر است‌"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "پس ایشان را از عذابی دردناک خبر ده‌"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "مگر کسانی که ایمان آورده‌اند و کارهای شایسته کرده‌اند، که ایشان را پاداشی است ناکاسته [/بی‌منت‌]"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "سوگند به آسمانی که دارای برجهاست‌"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "و سوگند به روز موعود"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "و سوگند به گواه و مورد گواهی‌"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "مرگ بر آتش افروزان گودال پرآتش‌"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "آتشی دارای هیزم‌"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "آنگاه که آنان بر کناره آن نشسته بودند"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "و آنان بر آنچه در حق مؤمنان می‌کردند، گواه بودند"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "و به آنان کینه نورزیدند، مگر از آن روی که به خداوند پیروزمند ستوده ایمان می‌ورزیدند"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "کسی که فرمانروایی آسمانها و زمین او راست، و خداوند بر همه چیز گواه است‌"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "کسانی که مردان مؤمن و زنان مؤمن را آزار دادند و سپس توبه نکردند، برای آنان عذاب جهنم [مهیا] است و عذاب آتش [در پیش‌] دارند"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "بی‌گمان کسانی که ایمان آورده‌اند و کارهای شایسته کرده‌اند، ایشان راست بوستانهایی [بهشتی‌] که جویباران از فرودست آن جاری است، این رستگاری بزرگ است‌"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "بی‌گمان سختگیری پروردگارت، سهمگین است‌"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "اوست که [آفرینش را] آغاز کرده است و باز می‌گرداند"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "و اوست آمرزگار دوستدار"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "صاحب ارجمند عرش‌"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "کردگار خواسته خویش‌"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "آیا داستان سپاهیان به تو رسیده است؟"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "فرعون و قوم ثمود"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "آری کافران در انکارند"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "و خداوند بر فراز ایشان چیره است‌"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "حق این است که آن قرآن مجید است‌"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "در لوحی محفوظ"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و شباینده‌"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانی شباینده چیست‌"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره درخشان است‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هیچ جانی نیست مگر آنکه بر او نگهبانی هست‌"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس انسان بنگرد که از چه آفریده شده است‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبی جهیده آفریده شده است‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "که از میانه پشت و سینه‌ها بیرون آید"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بی‌گمان او بر باز گرداندن وی تواناست‌"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزی که رازها از پرده بیرون افتد"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "آنگاه او را یارا و یاوری نیست‌"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "و سوگند به آسمان باران‌دار"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و سوگند به زمین برشکافته به گیاه‌"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "که آن [قرآن‌] سخنی قاطع است‌"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و هزل نیست‌"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان نیرنگی می‌سگالند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "من نیز تدبیری می‌اندیشم‌"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس کافران را مهلت ده، و اندک زمانی فرو گذارشان‌"
        }
    ]
}