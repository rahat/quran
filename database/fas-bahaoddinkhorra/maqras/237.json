{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "به نام پروردگارت که بلندمرتبه است، تسبیح گوی‌"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همانکه آفرید و سامان بخشید"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "همان کسی که اندازه آفرینی و رهنمایی کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و همان کسی که چراگاهها[ی سبز و خرم‌] رویانید"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "و سرانجام آن را خاشاکی [پژمرده و] سیاه گردانید"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زودا که تو را به خواندن آوریم و از یاد مگذاری‌"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا خواهد، که او آشکار و نهان را می‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و در کار تو آسانی پدید آوریم‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس اندرز ده، اگر [دهی‌] اندرز سود دهد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "زودا کسی که خشیت پیشه کرده است، پند گیرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و شقاوت‌پیشه از آن دوری کند"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان کسی که به آتش سترگ درآید"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "آنگاه در آنجا نه بمیرد و نه زنده بماند"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "به راستی هر کس پاکدلی پیشه کرد، رستگار شد"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و [هر کس‌] که نام پروردگارش را یاد کرد و نیایش کرد"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "حق این است که شما زندگانی دنیا را بر می‌گزینید"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "و حال آنکه آخرت بهتر و پاینده‌تر است‌"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "این [نکته‌] در کتب آسمانی پیشین هم هست‌"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "در صحف ابراهیم و موسی‌"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آیا داستان هنگامه فراگیر به تو رسیده است؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در چنین روز چهره‌هایی خاکسار باشند"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "سختی دیده و محنت کشیده‌"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "که به آتشی بس سوزان درآیند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از چشمه‌ای گرم به آنان نوشانده شود"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "خوراکی غیر از خار خشک زهردار ندارند"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "که نه فربه گرداند، و نه گرسنگی را چاره کند"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "در چنین روز چهره‌هایی خرم باشند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از کوشش [پیشین‌] خود خشنود"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشت برین‌"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "در آنجا لغوی نشنوند"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آنجا چشمه‌ای روان باشد"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آنجا تختهایی است بالا بلند"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و کوزه‌هایی پیش نهاده‌"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهایی ردیف شده‌"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرشهای زرباف گسترده‌"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آیا در شتر نمی‌نگرند که چگونه [بدیع‌] آفریده شده است؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و نیز به آسمان که چگونه برافراشته شده است‌"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و نیز به کوهها که چگونه بر قرار گردیده است‌"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و نیز به زمین که چگونه گسترده شده است‌"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس اندرز ده که همانا تو اندرزگویی‌"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "[و] بر آنان مسلط [و حکمفرما] نیستی‌"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر کسی که روی برتابد و کفر پیشه کند"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "که خداوند او را به عذابی سهمگین، عذاب کند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "بی‌گمان بازگشت آنان به نزد ماست‌"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس حساب آنان با ماست‌"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "سوگند به سپیده دم‌"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "و سوگند به شبهای ده‌گانه‌"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "و سوگند به زوج و فرد"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "و سوگند به شب چون سرآید"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "آیا در اینها خردمندان را سوگندی سزاوار است؟"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "آیا نیندیشیده‌ای که پروردگارت در حق [قوم و سرزمین‌] عاد چگونه عمل کرد؟"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "که ارم ستون‌دار داشت‌"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "همان که مانندش در [هیچ‌یک از] شهرها ساخته نشده بود"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "و نیز قوم ثمود که در وادی‌القری، [خانه از] سنگ می‌بریدند [و می‌تراشیدند]"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "و فرعون صاحب سپاه‌"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "کسانی که در شهرها سر به طغیان برداشته بودند"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "و در آنجا چه بسیار فتنه و فساد می‌کردند"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "و سرانجام پروردگارت تازیانه عذاب را بر سر آنان کشید"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "بی‌گمان پروردگارت در کمینگاه است‌"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "اما انسان چون پروردگارش او را بیازماید و او را گرامی دارد و به او نعمت بخشد، [شاد و مغرور شود و] گوید پروردگارم مرا گرامی داشت‌"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "و اما چون او را [به بلا و محنت‌] بیازماید و روزی او را بر او تنگ گیرد، [بی‌صبری و ناسپاسی کند و] گوید پروردگارم مرا خوار داشت‌"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "چنین نیست، بلکه یتیم را نمی‌نوازید"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "و بر اطعام بینوا ترغیب نمی‌کنید"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "و میراث را [به حق و ناحق‌] یکسره می‌خورید"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "و مال را چه بسیار دوست می‌دارید"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "چنین نیست، آنگاه که زمین پخش و پراکنده شود"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "و امر پروردگارت فرارسد و فرشتگان صف در صف آیند"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "و در چنین روز جهنم را به میان آورند، در چنین روز انسان پندگیرد و او را چه جای پند گرفتن است‌"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "[از سر حسرت‌] گوید کاش من برای این زندگانی [اخروی‌]ام پیش اندیشی کرده بودم‌"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس در چنین روز هیچ کس چون عذاب او [خداوند]، عذاب نکند"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و هیچ کس چون بند نهادن او، بند ننهد"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "هان ای نفس مطمئنه‌"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "به سوی پروردگارت که تو از او خشنودی و او از تو خشنود است، باز گرد"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "و در زمره بندگان من درآی‌"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و به بهشت من وارد شو"
        }
    ]
}