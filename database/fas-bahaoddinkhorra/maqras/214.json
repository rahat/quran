{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "چون واقعه بزرگ [قیامت‌] واقع شود"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "در وقوع آن دروغی نیست‌"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "هم فرو دارنده‌[ی کافران‌] است و هم فرادارنده‌[ی مؤمنان‌]"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "آنگاه که زمین به جنبشی سخت جنبانده شود"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و کوهها سخت خرد و ریز شود"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "و همچون غباری پراکنده گردد"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما گروههای سه‌گانه‌ای باشید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "[یکی‌] اصحاب یمین، و چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و [دیگری‌] اصحاب شمال، و چه حال دارند اصحاب شمال‌"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و [سومین‌] سابقان که پیشتازانند"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "اینانند که مقرب‌اند"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در بهشتهای پرناز و نعمت‌"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروهی بسیار از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهای گوهرنشان‌"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "رودرروی هم بر آنها تکیه زده‌اند"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "جاودانه جوانان بر گرد آنان می‌گردند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "همراه با کوزه‌ها و ابریقها و جامهایی از شراب جاری‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "که [بهشتیان‌] از آن سردرد نگیرند و بد مست نشوند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌هایی از آنچه بر می‌گزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغ از آنچه خوش دارند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و حوریان چشم درشت‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "که همانندان مروارید نهفته‌اند"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "این پاداش کاری است که کرده‌اند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آنجا [سخنان‌] بیهوده و [گزاف‌] گناه‌آلود نشنوند"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "نشنوند مگر سخنی که سلام است و سلام‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و اصحاب یمین چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در جوار درختان سدر بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزهای توبرتو"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه گسترده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه بسیار"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "که نه پایان‌پذیر است و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و دوشیزگان گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "ما ایشان را به ابداع آفریده‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "و دوشیزه‌شان داشته‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "همسر دوست و هم سن و سال‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "خاص اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "جماعتی بسیار از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "و جماعتی بسیار از واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "و اصحاب شمال، چه حال دارند اصحاب شمال‌"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "در میان آتشباد و آب جوشند"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "و سایه‌ای از دوده‌"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "که نه خنک است و نه خوش‌"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "ایشان پیش از این نازپرورده بودند"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "بر گناه بزرگ مداومت می‌کردند"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "و می‌گفتند آیا چون مردیم و خاک و استخوانها[ی پوسیده‌] شدیم، آیا برانگیخته خواهیم شد؟"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "و همچنین نیاکان ما؟"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "بگو که پیشینیان و واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "برای موعد روزی معین گرد آیند"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "سپس شمایان ای گمراهان دروغ انگار [و اهل انکار]"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "خورندگان از درخت زقومید"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "و شکم انباران از آن‌"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "و بر آن آب جوش آشامندگانید"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "و مانند نوشیدن شتران عطش زده می‌آشامید"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "این پیشکش ایشان در روز جزاست‌"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "ما شما را آفریده‌ایم، پس چرا تصدیق نمی‌کنید؟"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "آیا اندیشیده‌اید آنچه [از منی‌] را که [در رحمها] می‌ریزید"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "آیا شما آن را آفریده‌اید یا ما آفریننده‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "ما در میان شما مرگ را مقدر داشته‌ایم، و ما درمانده نیستیم‌"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "که همانندان شما را جانشین شما گردانیم، و شما را در هیئتی که نمی‌دانید باز آفرینیم‌"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "و به راستی نشاه نخستین را شناخته‌اید، پس چرا پند نمی‌گیرید؟"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "آیا اندیشیده‌اید در آنچه می‌کارید؟"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "آیا شما آن را می‌رویانید یا ما رویاننده‌ایم؟"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "اگر خواهیم آن را خرد و ریز گردانیم و شما حسرت‌زده شوید"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "[و گویید] ما غرامت دیدگانیم‌"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بلکه ما بی‌بهرگانیم‌"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "آیا اندیشیده‌اید به آبی که می‌آشامید؟"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "آیا شما آن را از ابر فرو فرستاده‌اید یا ما فرو فرستنده‌ایم؟"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "اگر خواهیم آن را شور و تلخ گردانیم پس چرا سپاس نمی‌گزارید؟"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "آیا اندیشیده‌اید به آتشی که می‌افروزید؟"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "آیا شما درختش را آفریده‌اید یا ما آفریننده‌ایم؟"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "ما آن را پندآموزی ساخته‌ایم و توشه‌ای برای رهروان‌"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "پس به نام پروردگارت که بزرگ است تسبیح گوی‌"
        }
    ]
}