{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "سوگند به شب چون فرو پوشاند"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "و سوگند به روز چون روشن شود"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "و سوگند به آنکه نرینه و مادینه آفرید"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "که کوشش شما پراکنده [و گونه‌گون‌] است‌"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "حال اگر کسی [مالی‌] بخشید و پروا و پرهیز ورزید"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "و [وعده‌] بهشت را استوار داشت‌"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "زودا که راهش را به سوی خیر و آسانی هموار کنیم‌"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "و اما کسی که دریغ‌ورزید و بی‌نیازی نمود"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "و وعده بهشت را دروغ انگاشت‌"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "زودا که راهش را به سوی شر و دشواری هموار کنیم‌"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "و چون به هلاکت افتد مالش به کار او نیاید"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "بی‌گمان راهنمایی [بندگان‌] بر ماست‌"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "و بی‌گمان [جهان‌] واپسین و نخستین ما راست‌"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "پس شما را از آتشی که زبانه زند هشدار دهم‌"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "که جز شقاوت پیشه وارد آن نشود"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان کسی که [حق را] انکار کرد و روی بر تافت‌"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و تقواپیشه از آن دور داشته خواهد شد"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان کسی که مالش را می‌بخشد که پاکدلی یابد"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و بر او [منت از] نعمت کسی نیست که باید جزایش را بدهد"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "[و نمی‌کند آنچه می‌کند] مگر در طلب خشنودی پروردگار بلندمرتبه‌اش‌"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و زودا که خشنود شود"
        }
    ]
}