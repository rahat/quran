    "pages": [
        {
            "chapter": 55,
            "verse": 68,
            "text": "در آن دو [درختان‌] میوه و خرما و انار هست‌"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "در آنها دوشیزگان نیکخو و زیبا روست‌"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "حوریان پرده‌نشین در خیمه‌ها"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "پیش از آنان، هیچ انسان و هیچ جنی با آنان آمیزش نکرده است‌"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "تکیه زده بر بالش‌[های‌] سبزرنگ و بر فرش‌[های‌] گرانمایه نیکو"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "پس کدامین نعمتهای پروردگارتان را انکار می‌کنید؟"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "متبرک باد نام پروردگارت که شکوهمند و گرامی است‌"
        },
        {
            "chapter": 56,
            "verse": 1,
            "text": "چون واقعه بزرگ [قیامت‌] واقع شود"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "در وقوع آن دروغی نیست‌"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "هم فرو دارنده‌[ی کافران‌] است و هم فرادارنده‌[ی مؤمنان‌]"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "آنگاه که زمین به جنبشی سخت جنبانده شود"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و کوهها سخت خرد و ریز شود"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "و همچون غباری پراکنده گردد"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما گروههای سه‌گانه‌ای باشید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "[یکی‌] اصحاب یمین، و چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و [دیگری‌] اصحاب شمال، و چه حال دارند اصحاب شمال‌"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و [سومین‌] سابقان که پیشتازانند"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "اینانند که مقرب‌اند"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در بهشتهای پرناز و نعمت‌"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروهی بسیار از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهای گوهرنشان‌"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "رودرروی هم بر آنها تکیه زده‌اند"
        }
    ]
}