    "pages": [
        {
            "chapter": 77,
            "verse": 20,
            "text": "آیا شما را از آبی بی‌مقدار نیافریده‌ایم؟"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "که سپس آن را در جایگاهی استوار قرار دادیم‌"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا هنگامی معین‌"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "پس سامان دادیم و چه نیک سامانگریم‌"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "آیا زمین را فراگیر نساختیم؟"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "چه برای زندگان، چه برای مردگان‌"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "و در آن کوههای بلند پدید آوردیم و به شما آبی شیرین نوشاندیم‌"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "به سوی چیزی که انکارش می‌کردید بروید"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "به سوی دودی دارای سه شاخه بروید"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "که نه سایه‌گستر است و نه از لهیب آتش باز می‌دارد"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "آن شراره‌هایی همچون کوشک می‌پراکند"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گویی شترانی زرد سیه‌تاب هستند"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "این روزی است که سخن نگویند"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "و به ایشان اجازه ندهند که عذرخواهی کنند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "این روز داوری است، شما و پیشینیان را گرد آورده‌ایم‌"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "اگر نیرنگی دارید برای من بسگالید"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "پرهیزگاران در سایه‌ساران و [کنار] چشمه‌سارانند"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "و میوه‌هایی که دلخواهشان است‌"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "به خاطر کارهایی که کرده‌اید، بخورید و بنوشید، [خوش و] گوارا"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "ما بدین گونه نیکوکاران را جزا می‌دهیم‌"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "اندکی بخورید و بهره‌مند باشید، چرا که شما گناهکارید"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "و چون به ایشان گفته می‌شد نماز بگزارید، نماز نمی‌گزاردند"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "در چنین روز وای بر منکران‌"
        },
        {
