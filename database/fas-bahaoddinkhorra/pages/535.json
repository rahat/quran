{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "جاودانه جوانان بر گرد آنان می‌گردند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "همراه با کوزه‌ها و ابریقها و جامهایی از شراب جاری‌"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "که [بهشتیان‌] از آن سردرد نگیرند و بد مست نشوند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌هایی از آنچه بر می‌گزینند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و گوشت مرغ از آنچه خوش دارند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و حوریان چشم درشت‌"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "که همانندان مروارید نهفته‌اند"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "این پاداش کاری است که کرده‌اند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آنجا [سخنان‌] بیهوده و [گزاف‌] گناه‌آلود نشنوند"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "نشنوند مگر سخنی که سلام است و سلام‌"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و اصحاب یمین چه حال دارند اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در جوار درختان سدر بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و موزهای توبرتو"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه گسترده‌"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی ریزان‌"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه بسیار"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "که نه پایان‌پذیر است و نه بازداشته‌"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و دوشیزگان گرامی‌"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "ما ایشان را به ابداع آفریده‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "و دوشیزه‌شان داشته‌ایم‌"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "همسر دوست و هم سن و سال‌"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "خاص اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "جماعتی بسیار از پیشینیان‌"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "و جماعتی بسیار از واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "و اصحاب شمال، چه حال دارند اصحاب شمال‌"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "در میان آتشباد و آب جوشند"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "و سایه‌ای از دوده‌"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "که نه خنک است و نه خوش‌"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "ایشان پیش از این نازپرورده بودند"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "بر گناه بزرگ مداومت می‌کردند"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "و می‌گفتند آیا چون مردیم و خاک و استخوانها[ی پوسیده‌] شدیم، آیا برانگیخته خواهیم شد؟"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "و همچنین نیاکان ما؟"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "بگو که پیشینیان و واپسینان‌"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "برای موعد روزی معین گرد آیند"
        }
    ]
}