{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "حال امروز و اینجا دوستی ندارد"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "و نه خوراکی، بجز زردابه‌"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "که آن را جز خطاکاران نمی‌خورند"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس به آنچه می‌بینید سوگند می‌خورم‌"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و به آنچه نمی‌بینید"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "که آن [قرآن‌] برخوانده فرستاده گرامی است‌"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و سخن هیچ شاعری نیست، چه اندک ایمان می‌آورید"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و سخن هیچ کاهنی نیست، چه اندک پند می‌گیرید"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "و فرو فرستاده‌ای از سوی پروردگار جهانیان است‌"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر بر ما سخنانی می‌بست‌"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "دست راستش را می‌گرفتیم‌"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "سپس شاهرگش را قطع می‌کردیم‌"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "و هیچ‌یک از شما مدافع او نبود"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "و آن پندآموزی برای پرهیزگاران است‌"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و ما به یقین می‌دانیم که از میان شما تکذیب‌کنندگانی هستند"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و آن [پیام‌]، مایه حسرتی بر کافران است‌"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و آن [پیام‌]، حق‌الیقین است‌"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس به نام پروردگار بزرگ خود تسبیح گوی‌"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "خواهنده‌ای عذابی رخ دادنی را طلب کرد"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "که برای کافران است [و] بازدارنده‌ای ندارد"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "از جانب خداوند صاحب درجات‌"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "که فرشتگان و روح در روزی که به اندازه پنجاه هزار سال [دنیوی‌] است به سوی او فرا می‌روند"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "پس صبری نیکو پیشه کن‌"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "آنان آن را دوردست می‌بینند"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "و ما نزدیک می‌بینیمش‌"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "روزی که آسمان چون فلز گداخته شود"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "و کوهها همچون پشم رنگین گردد"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "و هیچ خویشاوندی از حال خویشاوندی نپرسد"
        }
    ]
}