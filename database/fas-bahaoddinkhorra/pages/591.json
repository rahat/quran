{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و شباینده‌"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانی شباینده چیست‌"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره درخشان است‌"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هیچ جانی نیست مگر آنکه بر او نگهبانی هست‌"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس انسان بنگرد که از چه آفریده شده است‌"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبی جهیده آفریده شده است‌"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "که از میانه پشت و سینه‌ها بیرون آید"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بی‌گمان او بر باز گرداندن وی تواناست‌"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزی که رازها از پرده بیرون افتد"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "آنگاه او را یارا و یاوری نیست‌"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "و سوگند به آسمان باران‌دار"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و سوگند به زمین برشکافته به گیاه‌"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "که آن [قرآن‌] سخنی قاطع است‌"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و هزل نیست‌"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان نیرنگی می‌سگالند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "من نیز تدبیری می‌اندیشم‌"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس کافران را مهلت ده، و اندک زمانی فرو گذارشان‌"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "به نام پروردگارت که بلندمرتبه است، تسبیح گوی‌"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همانکه آفرید و سامان بخشید"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "همان کسی که اندازه آفرینی و رهنمایی کرد"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و همان کسی که چراگاهها[ی سبز و خرم‌] رویانید"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "و سرانجام آن را خاشاکی [پژمرده و] سیاه گردانید"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زودا که تو را به خواندن آوریم و از یاد مگذاری‌"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا خواهد، که او آشکار و نهان را می‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و در کار تو آسانی پدید آوریم‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس اندرز ده، اگر [دهی‌] اندرز سود دهد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "زودا کسی که خشیت پیشه کرده است، پند گیرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و شقاوت‌پیشه از آن دوری کند"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان کسی که به آتش سترگ درآید"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "آنگاه در آنجا نه بمیرد و نه زنده بماند"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "به راستی هر کس پاکدلی پیشه کرد، رستگار شد"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و [هر کس‌] که نام پروردگارش را یاد کرد و نیایش کرد"
        }
    ]
}