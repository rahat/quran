{
    "pages": [
        {
            "chapter": 56,
            "verse": 77,
            "text": "آن قرآنی کریم است‌"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "در کتابی نهفته‌"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "جز پاکیزگان به آن دسترس ندارند"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "فرو فرستاده‌ای از سوی پروردگار جهانیان است‌"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "آیا شما در کار این سخن سستی می‌ورزید؟"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "و سپاس روزیتان را چنان کرده‌اید که [آن را] انکار می‌کنید"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "پس چرا چون جان به گلوگاه رسد"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "و شما در آن هنگام نظاره‌گرید"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "و ما به آن [جان شما] از شما نزدیکتریم ولی شما به چشم بصیرت نمی‌نگرید"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "پس چرا اگر شما جزا دادنی نیستید"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "اگر راست می‌گویید چرا آن را باز نمی‌گردانید؟"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "سپس آنگاه اگر از مقربان باشد"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "رهایش و گشایش است و بهشت پرناز و نعمت‌"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "و اما اگر از اصحاب یمین باشد"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "پس سلام بر تو باد از اصحاب یمین‌"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "و اما اگر از منکران گمراه باشد"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "پیشکش [او] از آب‌جوشان است‌"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "و ورود به جهنم‌"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "این همانا حق‌الیقین است‌"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "پس به نام پروردگارت که بزرگ است، تسبیح بگوی‌"
        },
        {
            "chapter": 57,
            "verse": 1,
            "text": "آنچه در آسمانها و زمین است، خداوند را تسبیح می‌گوید، و اوست پیروزمند فرزانه‌"
        },
        {
            "chapter": 57,
            "verse": 2,
            "text": "او راست فرمانروایی آسمانها و زمین، که زنده می‌دارد و می‌میراند، و او بر هر کاری تواناست‌"
        },
        {
            "chapter": 57,
            "verse": 3,
            "text": "اوست اول و آخر و ظاهر و باطن و او به همه چیز داناست‌"
        }
    ]
}