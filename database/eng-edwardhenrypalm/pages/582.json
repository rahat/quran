            "chapter": 78,
            "verse": 3,
            "text": "whereon they do dispute"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "nay, they shall know too well"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Again, nay, they shall know too well"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Have we not set the earth as a couch"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "and the mountains as stakes"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "and created you in pairs"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "and made your sleep for rest"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "and made the night a garment"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "and made the day for livelihood"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "and built above you seven solid (heavens)"
