{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Dunyalıklarla boburlenmek, oyaladı sizleri"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Ta boylayıncaya kadar kabirleri"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır (gecici dunya zevklerine baglanmak dogru degil, sakının bundan) ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Evet, evet! Ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Sakının bundan! Eger kesin bir tarzda (ilmelyakin) bilseydiniz boyle yapmazdınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Siz cehennemi goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Evet, evet onu mutlaka gozlerinizle goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gun nimetlerden hesaba cekileceksiniz"
        }
    ]
}