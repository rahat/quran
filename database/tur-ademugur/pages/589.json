{
    "pages": [
        {
            "chapter": 83,
            "verse": 35,
            "text": "Koltuklar üzerinde etrafa bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Kâfirler yaptıklarının cezasını buldular mı! (Elbette buldular)"
        },
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine kulak verip boyun eğecek hale getirildiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz edildiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde bulunanları atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabb´ini dinleyip O´na hakkıyla itaata mecbur kılındığı vakit (insanoğlu yaptıkları ile karşılaşır)"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Şüphe yok ki sen Rabbine karşı çaba üstüne çaba göstermektesin; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Derhal yok olmayı isteyecek"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Zira o, (dünyada) ailesi içinde (mal mülk sebebiyle) şımarmıştı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O hiçbir zaman Rabbine dönmeyeceğini sandı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Oysa gerçekten Rabbi onu görüyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Hayır! Şafağa, yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve onda basan karanlığa"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay olmuş aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar acaba neden iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlar kendilerine Kur´an okununca secde de etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, kâfirler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah onların gizlediği şeyleri çok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "(Resûlüm!) Onlara acı azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İman edip sâlih amel işleyenler başkadır; onlar için arkası kesilmeyen bir mükâfat vardır"
        }
    ]
}