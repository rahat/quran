        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneşe ve kuşluk vaktindeki aydınlığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Güneşi takip ettiğinde Ay´a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu açığa çıkarttığında gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu örttüğünde geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Gökyüzüne ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yapıp döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve ona birtakım kabiliyetler verene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona iyilik ve kötülükleri ilham edene yemin ederim ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Nefsini kötülüklerden arındıran kurtuluşa ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kötülüklere gömen de ziyan etmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlığı yüzünden (Allah´ın elçisini) yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Onların en bedbahtı (deveyi kesmek için) atıldığında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın Resûlü onlara: \"Allah´ın devesine ve onun su hakkına dokunmayın!\" dedi"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Ama onlar, onu yalanladılar ve deveyi kestiler. Bunun üzerine Rableri günahları sebebiyle onlara büyük bir felâket gönderdi de hepsini helâk etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "(Allah, bu şekilde azap etmenin) âkıbetinden korkacak değil ya"
        }
    ]
