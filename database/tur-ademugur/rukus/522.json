{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Yüzünü ekşitti ve geri döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Âmânın kendisine gelmesinden ötürü"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut öğüt alacak da o öğüt ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini (sana) muhtaç görmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa ki onun temizlenip arınmasından sen sorumlu değilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat koşarak sana gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ve (Allah´tan) korkarak gelenle"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır! Şüphesiz bunlar bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen ondan (Kur´an´dan) öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, değerli sahifelerdir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Tertemiz kılınmış, yüce makamlara kaldırılmış mukaddes sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Kâtiplerin ellerindedir"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Değerli ve güvenilir katiplerin"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan! Ne inkârcıdır"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah onu neden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden (spermadan) yarattı da ona şekil verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onun canını aldı ve kabre soktu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği bir vakitte onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır! (İnsan) Allah´ın emrettiğini yapmadı"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan, yediğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Yağmurlar yağdırdık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı göz göz yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu suretle orada ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinlikler, hurmalıklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "İri ve sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve çayırlar bitirdik"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(Bütün bunlar) sizi ve hayvanlarınızı yararlandırmak içindir"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sağır eden o ses geldiğinde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "İşte o gün kişi kardeşinden, kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve çocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün, herkesin kendine yetip artacak bir derdi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün bir takım yüzler parıl parıl"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güler ve sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yine o gün birtakım yüzleri de keder bürümüş"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Hüzünden kapkara kesilmiştir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte bunlar kâfirlerdir, günahkârlardır"
        }
    ]
}