{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Tozdurup savuranlara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Yükünü yüklenenlere"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca süzülenlere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "İşleri ayıranlara andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size vâdedilen, kesinlikle doğrudur"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ve ceza mutlaka vuku bulacaktır"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "İçinde yörüngeleri olan göğe andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Siz çelişkili sözler söylüyorsunuz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Ondan (Kur´an´dan veya imandan) dönen döndürülür (engellenmez)"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Kahrolsun o koyu yalancılar"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Onlar koyu bir cehalet içerisinde kalmış gafillerdir"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Ceza gününün ne zaman olduğunu sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gün onlar ateşe sokulacaklardır"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Azabınızı tadın! Acele gelmesini beklediğiniz şey budur işte! (denir)"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Şüphesiz ki Allah´a isyandan sakınanlar, cennetlerde ve pınar başlarında bulunacaklar"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rablerinin kendilerine verdiğini alarak. Kuşkusuz onlar, bundan önce dünyada güzel davrananlardı"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri pek az uyurlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seher vakitlerinde de istiğfar ederlerdi"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Mallarında, muhtaç ve yoksullar için bir hak vardı"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Kesin olarak inananlar için yeryüzünde âyetler vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi nefislerinizde de öyle. Görmüyor musunuz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Semada da rızkınız ve size vâdedilen başka şeyler vardır"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Göğün ve yerin Rabbine andolsun ki bu vaad, sizin konuşmanız gibi kesin ve gerçektir"
        }
    ]
}