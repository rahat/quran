{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır hayır (öğüt almazlar). Aya andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Dönüp gitmekte olan geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ağarmakta olan sabaha andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "O (cehennem), büyük musibetlerden biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "İnsanlık için, uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden ileri gitmek ya da geri kalmak isteyen kimseler için (uyarıcıdır)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis, kazandığına karşılık bir rehindir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sağdakiler başka"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennetler içinde sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Günahkârların durumunu"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi şu yakıcı ateşe sokan nedir? diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar şöyle cevap verirler: Biz namaz kılanlardan değildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksulu doyurmuyorduk"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "(Bâtıla) dalanlarla birlikte dalıyorduk"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ceza gününü de yalan sayıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Sonunda bize ölüm geldi çattı"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık şefaatçilerin şefaati onlara fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Böyle iken onlara ne oluyor ki, öğütten yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Kaçan yaban eşekleri gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Âdeta arslandan ürkmüş"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Daha doğrusu onlardan her biri, kendisine, (önünde) açılmış sahifeler (ilâhî vahiy) verilmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır! Aslında onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Asla (düşündükleri gibi değil)! Bilsinler ki bu, gerçekten bir ikazdır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan (düşünüp) öğüt alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bununla beraber, Allah dilemeksizin onlar öğüt alamazlar. Sakınılmaya lâyık olan da O´dur, mağfiret sahibi de O´dur"
        }
    ]
}