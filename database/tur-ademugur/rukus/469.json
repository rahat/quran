{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Ki onun oluşunu yalanlayacak hiçbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar parçalandığı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dağılıp toz duman haline geldiği"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağdakiler, ne mutlu o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdırlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, (ecirde de) öndedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte bunlar, (Allah´a) en yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naîm cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onların) çoğu önceki ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Cevherlerle işlenmiş tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların üzerlerinde karşılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Çevrelerinde, (hizmet için) ölümsüz gençler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Maîn çeşmesinden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu şaraptan ne başları ağrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "(Onlara) beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "İri gözlü hûriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen, yalnızca \"selâm, selâm\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, ne mutlu o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Düzgün kiraz ağacı"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyveleri salkım salkım dizili muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Sayısız meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve kabartılmış döşekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gerçekten biz hûrileri apayrı biçimde yeni yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, bâkireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bütün bunlar sağdakiler içindir"
        }
    ]
}