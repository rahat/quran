{
    "chapter": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Peyğəmbər qaşqabağını tökdü və üzünü çevirdi –"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "yanına korun gəldiyinə görə"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nə bilirdin ki, bəlkə o gü­nahlardan təmizlənəcəkdi"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "və yaxud nəsihət dinlə­yib fayda­lanacaqdı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Nəsihətə ehtiyacı olma­ya­na gəlincə isə"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sən ona diqqət yetirirsən"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun təmizlənməməyi­nin sənə bir aidiyyəti yox­dur"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Səy göstərib sənin yanına gələn"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allahdan qorxan kimsəyə gəlincə"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "sən ona məhəl qoymursan"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Xeyr! Şübhəsiz ki, bu, bir nəsi­hətdir"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Kim istəsə, qoy onu xa­tırlayıb ibrət alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Bu Quran kəramətli sə­hi­fələr­də"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yüksək və pak səhifələr­də­dir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Bu səhifələr elçilərin əl­lə­rində –"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "möhtərəm və müti olan­ mələklərin əllə­rindədir"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Qoy ölsün kafir insan! O necə də nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Qoy baxıb görsün, Allah onu nədən yaradıb"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Allah onu nütfədən ya­ratdı və onu müəyyən şəklə saldı"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da onun yolunu asanlaş­dırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürüb qə­bi­rə yerləş­dirdi"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra da istədiyi vaxt onu yenidən dirildə­cək"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Xeyr! O, hələ də Allahın ona bu­yurduğunu yerinə ye­tir­mə­miş­dir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Qoy insan yediyinə diq­qət yetir­sin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Həqiqətən, yağışı bol-bol Biz yağ­dırırıq"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra da yeri çat-çat ya­rıb"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "orada taxıl yetişdiririk"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Habelə üzüm və yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytun və xurma ağac­la­rı"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "sıx-sıx bağlar"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyvələr və otlar da bi­tiririk"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Bu nemətlər sizin isti­fa­də­niz və mal-qaranızın fayda­lan­ması üçün­dür"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Qulaqbatırıcı bir səs gə­ləndə –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "o gün insan qaçacaq öz qarda­şından"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, atasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "həyat yoldaşından və övladla­rından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün onlardan hər biri­nin yetə­rincə işi olacaq­"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün neçə-neçə üzlər par­layacaq"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "güləcək və fərəhlənə­cək­"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gün neçə-neçə üzlərə toz-torpaq hopacaq"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "onları zülmət bürüyə­cək­"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Məhz onlar kafirlər, gü­nah­kar­lardır"
        }
    ]
}