{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Göy parçalanacağı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "ulduzlar səpələnəcəyi za­man"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "dənizlər daşıb bir-birinə qarışacağı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "qəbirlər çevriləcəyi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "hər kəs əvvəlcədən özü üçün nəyi tədarük edib, nəyi sonraya sax­ladığını biləcək"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Səni öz Səxa­vətli Rəbbinə qarşı qoyan nədir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, səni yaradıb kamil­ləşdirdi və sənə gözəl bir surət verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Səni istədiyi şəklə saldı"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Xeyr! Əksinə, siz Qiya­mə­ti yalan hesab edir­siniz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Həqiqətən, sizin üstü­nüz­də nə­za­rətçilər var –"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "çox möhtərəm, əməllə­ri­nizi ya­zanlar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar sizin nə etdiklə­ri­nizi bi­lirlər"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Həqiqətən, yaxşılar ne­mət içində ola­caqlar"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Şübhəsiz ki, günahkar­lar da Cə­hənnəmdə olacaqlar"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Onlar ora Haqq-hesab günü girə­cəklər"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar əsla ondan yayına bilmə­yəcəklər"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sən haradan biləydin ki, Haqq-hesab günü nədir"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Doğrudan da, sən hara­dan biləy­din ki, Haqq-hesab günü nə­dir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün heç kəs heç kəsə fayda verə bilməz. O gün hökm yalnız Allaha məx­sus olacaq"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Çəkidə və ölçüdə alda­dan­ların vay halına"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "O kəslərin ki, camaatdan bir şey aldıqda onu tam almaq is­tə­yər­lər"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "onlar üçün bir şey ölç­dük­də və ya çəkdikdə isə onları zi­yana sa­lar­lar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar dirildiləcəkləri barədə fi­kirləş­mir­lərmi"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Özü də əzəmətli bir gün­də"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gündə ki, insanlar aləm­lərin Rəb­binin qarşısında duracaq­lar"
        }
    ]
}