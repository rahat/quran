{
    "pages": [
        {
            "chapter": 100,
            "verse": 10,
            "text": "və kökslərdə olanlar aş­kar edilə­cəyi zaman –"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "məhz o gün Rəbbi on­lar­dan xə­bərdar ola­caq"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Qəlbləri qorxuya salan Qariə"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nədir Qariə"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Sən nə bilirsən ki, nədir Qariə"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar ətrafa sə­pə­lənmiş pərvanələr tək ola­caq­lar"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar isə didilmiş yun görkəmi alacaq"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "O gün kimin tərəziləri ağır gələrsə"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "xoşbəxt güzəran sürəcək"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tərəziləri yüngül gə­lərsə"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "məskəni Haviyə olacaq­"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Sən nə bilirsən ki, o Haviyə nədir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, çox qızmar bir od­dur"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çoxluğa hərisliyiniz ba­şı­nızı o qə­dər qatdı ki"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "nəhayət, qəbirləri zi­ya­rət etdi­niz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Yox-yox! Siz aqibətinizi hök­mən biləcəksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Bir də yox! Siz aqibətinizi tezliklə biləcəksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Xeyr! Kaş ki, yəqin biləy­di­niz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Siz Cəhənnəmi mütləq gö­rəcək­siniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Onu həqiqətən öz gözü­nüzlə müt­ləq görəcəksi­niz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra, o gün nemətlər ba­rəsində hökmən sorğu-suala tu­tu­la­caq­sınız"
        }
    ]
}