{
    "chapter": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Ey libasına bürünüb ör­tün­müş pey­ğəmbər"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Qalx və insanları xə­bər­dar et"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Təkcə Rəbbini uca tut"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Geyimini təmiz saxla"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Pis şeyləri tərk et"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Yaxşılığı təmənna məq­sə­dilə etmə"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Rəbbin üçün səbir et"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Sur üfürülərkən –"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Çətin bir gün olacaq"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Həmin gün kafirlərə asan olma­ya­caq"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Məni yaratdı­ğım kimsə ilə tək burax"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Mən ona bolluca var-dövlət ba­ğış­ladım"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "qayğısına qalan oğullar verdim"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "və onu hər cür imkan­larla təmin etdim"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Bunlara baxmayaraq, o, ye­nə də əlavə etməyimi arzu­layır"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Xeyr! Çünki o, ayələri­mizi inadla inkar edir"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Mən onu sərt bir yoxuşa sürük­lə­yəcəyəm"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Çünki o, fikirləşərək qə­rara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona ölüm olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona ölüm ol­sun! Gör nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra üz-gözünü turşudub qaş-qabağını tökdü"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını çevi­rib təkəb­bür göstərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbaz­lar­dan eşidi­lib təkrarlanan sehr­dən baş­qa bir şey de­yil"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə sala­ca­ğam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sağ-salamat bu­rax­maz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun üzərində on doq­quz gözətçi mələk var"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gözətçi­lərini yal­nız mələklər­dən etdik və on­la­rın sa­yını on doqquz et­dik ki, bu, kafir­lər üçün ancaq bir sınaq ol­sun, özlə­rinə Kitab verilənlər yəqinlik hasil etsin­lər, iman gə­ti­rən­lə­rin ima­nı art­sın, Kitab ve­rilən­lər və mö­min­lər haqqa şübhə etmə­sin­lər və qəlblərində xəs­təlik olanlar və kafir­lər: “Allah bu mə­səllə nə demək istə­yir?”– desinlər. Allah istədiyi kimsəni belə az­dırır, is­­tədiyini də doğru yola yönəl­dir. Sə­nin Rəbbinin qo­şunları ba­rə­də yal­nız Özü bilir. Bu, bə­şəriyyət üçün ancaq bir xatır­latmadır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun dönüb uzaq­laşan ge­cəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun ağarmaqda olan sübh çağına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Doğrudan da o Cəhən­nəm ən bö­yük fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəşəriyyət üçün xə­bərdar­lıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxşı işlər görüb irəli çıxmaq və ya günah edib geriyə düş­mək is­tə­yənlər üçün"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazan­dığı­nın giro­vuna çevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sağ tərəf sahiblərindən başqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cən­nətlərdə bir-bir­lərindən soruşacaq­lar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "günahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qı­lanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməz­dik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sözlər danışanlarla birlikdə biz də danışardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gününü yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "ölüm yəqinliyi bizə gə­lə­nə qədər”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Odur ki, şəfaət edən­lə­rin şəfaəti onlara fayda verməz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Onlara nə olub ki, nəsi­hətdən üz dön­dərirlər"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki ürküdülmüş vəhşi uzunqu­laqlardır ki"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ovçulardan yaxud aslan­dan qaçır­lar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Əksinə, onlardan hər bi­ri vəhy olunmuş səhifələrin məhz ona verilmə­sini istəyir"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Xeyr! Əksinə, onlar Axi­rətdən qorxmurlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Xeyr! Bu Quran bir nə­sihətdir"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "İstəyən onu xatır­layar"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bilin ki, Allah istəmə­dik­cə onlar xatırlaya bil­məz­lər. Müt­ləq qüd­rətindən qorxub çə­kin­məyə layiq olan da, bağış­la­mağa qadir olan da Odur"
        }
    ]
}