{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Günəş sarınacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ulduzlar soluxub sönəcə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar hərəkətə gətirilə­cə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "boğaz dəvələr başlı-başı­na qala­caq­ları zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vəhşi heyvanlar bir yerə toplanacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dənizlər alovlanacağı za­man"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "hər kəs öz tayına qo­vuş­durulacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "diri-diri torpağa basdırıl­mış qız uşağı soruşulacağı za­man –"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hansı günaha görə öldü­rül­müş­dür"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "səhifələr açılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "göy qopardılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cəhənnəm alovlandırı­la­cağı za­man"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "və Cənnət möminlərə ya­xınlaşdı­rılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "hər kəs bu gün üçün özü­nə nə tə­darük etdiyini bilə­cək­dir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "And içirəm gecə çıxıb gün­düz batan ulduzlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "seyrə çıxıb gizlənən səy­yarələrə"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "qaralmaqda olan gecəyə"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "və açılmaqda olan səhə­rə"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Həqiqətən, bu, göndər­di­yimiz möh­tə­rəm bir elçinin sö­zü­dür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi ki, qüvvətlidir, Ər­şin sahibi yanında böyük hör­­mət sa­hi­bidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "orada itaət ediləndir, eti­barlı­dır"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin dostunuz Muhəm­məd di­vanə deyil"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "O, Cəbraili aydın üfüqdə gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, qeybdən gələn xəbərləri sizdən əsirgəyən de­yil"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu Quran daşqalaq olun­muş şey­tanın sözü də deyildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Elə isə ondan üz döndə­rib hara ge­dirsiniz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, aləmlərə yalnız bir nəsihətdir –"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "sizlərdən doğru yolda ol­maq istə­yənlər üçün"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Aləmlərin Rəbbi Allah istəmə­yincə, siz istəyə bilməz­siniz"
        }
    ]
}