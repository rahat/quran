{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Həqiqətən, Cəhənnəmdəki zəqqum ağacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "günahkar adamın yemə­yidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Əridilmiş yağın çökün­tü­sü kimi qarınlarda qaynayar –"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "qaynar su qaynayan ki­mi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu tutub Cəhənnəmin ortasına sürüyün"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra əzab vermək üçün başına qaynar su tökün"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Dad bu əzabı! Sən ki qüd­rətli və şərəfli idin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Sizin şübhə etdiyiniz əzab budur"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Allahdan qorxanlar isə təhlü­kə­siz bir yerdə –"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "bağçalarda və çeşmələr başında olacaqlar"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Taftadan və atlazdan li­baslar ge­yib qarşı-qarşıya əylə­şəcək­lər"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Bax belə! Üstəlik, onları iri qa­ra ­gözlü hurilərlə də ev­lən­di­rə­cə­yik"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Onlar orada əmin-aman­lıq içində hər meyvədən istə­yə­cək­lər"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Onlar ilk ölüm­dən başqa orada heç bir ölüm dadmaya­caq­lar. Allah on­ları Cəhənnəm əzabından qorumuşdur –"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "sənin Rəbbinin lütfkar­lı­ğı sayə­sində. Məhz bu, bö­yük uğur­dur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Biz Quranı sənin dilində asan­laş­dırdıq ki, onlar öyüd-nə­si­hət ala bilsin­lər"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Sən gözlə! Şübhəsiz ki, onlar da gözləyirlər"
        }
    ]
}