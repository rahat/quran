{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer titrəyib lərzəyə gələ­cəyi zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer öz yükünü bayıra ata­cağı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "və insan: “Ona nə olub?”– deyə­cəyi zaman –"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "həmin gün yer öz əh­va­lat­larını da­­nışacaq"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünki Rəbbin ona vəhy edəcək"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar əməl­ləri­nin onlara göstərilməsi üçün dəs­tə-dəs­tə gələ­cəklər"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Zərrə qədər yaxşılıq edən əvəzini alacaqdır"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Zərrə qədər pislik edən də əvəzini alacaqdır"
        }
    ]
}