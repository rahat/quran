{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Ey libasına bürünüb ör­tün­müş pey­ğəmbər"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Qalx və insanları xə­bər­dar et"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Təkcə Rəbbini uca tut"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Geyimini təmiz saxla"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Pis şeyləri tərk et"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Yaxşılığı təmənna məq­sə­dilə etmə"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Rəbbin üçün səbir et"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Sur üfürülərkən –"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Çətin bir gün olacaq"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Həmin gün kafirlərə asan olma­ya­caq"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Məni yaratdı­ğım kimsə ilə tək burax"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Mən ona bolluca var-dövlət ba­ğış­ladım"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "qayğısına qalan oğullar verdim"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "və onu hər cür imkan­larla təmin etdim"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Bunlara baxmayaraq, o, ye­nə də əlavə etməyimi arzu­layır"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Xeyr! Çünki o, ayələri­mizi inadla inkar edir"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Mən onu sərt bir yoxuşa sürük­lə­yəcəyəm"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Çünki o, fikirləşərək qə­rara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona ölüm olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona ölüm ol­sun! Gör nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra üz-gözünü turşudub qaş-qabağını tökdü"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını çevi­rib təkəb­bür göstərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbaz­lar­dan eşidi­lib təkrarlanan sehr­dən baş­qa bir şey de­yil"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə sala­ca­ğam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sağ-salamat bu­rax­maz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun üzərində on doq­quz gözətçi mələk var"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gözətçi­lərini yal­nız mələklər­dən etdik və on­la­rın sa­yını on doqquz et­dik ki, bu, kafir­lər üçün ancaq bir sınaq ol­sun, özlə­rinə Kitab verilənlər yəqinlik hasil etsin­lər, iman gə­ti­rən­lə­rin ima­nı art­sın, Kitab ve­rilən­lər və mö­min­lər haqqa şübhə etmə­sin­lər və qəlblərində xəs­təlik olanlar və kafir­lər: “Allah bu mə­səllə nə demək istə­yir?”– desinlər. Allah istədiyi kimsəni belə az­dırır, is­­tədiyini də doğru yola yönəl­dir. Sə­nin Rəbbinin qo­şunları ba­rə­də yal­nız Özü bilir. Bu, bə­şəriyyət üçün ancaq bir xatır­latmadır"
        }
    ]
}