{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun dönüb uzaq­laşan ge­cəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun ağarmaqda olan sübh çağına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Doğrudan da o Cəhən­nəm ən bö­yük fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəşəriyyət üçün xə­bərdar­lıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxşı işlər görüb irəli çıxmaq və ya günah edib geriyə düş­mək is­tə­yənlər üçün"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazan­dığı­nın giro­vuna çevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sağ tərəf sahiblərindən başqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cən­nətlərdə bir-bir­lərindən soruşacaq­lar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "günahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qı­lanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməz­dik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sözlər danışanlarla birlikdə biz də danışardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gününü yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "ölüm yəqinliyi bizə gə­lə­nə qədər”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Odur ki, şəfaət edən­lə­rin şəfaəti onlara fayda verməz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Onlara nə olub ki, nəsi­hətdən üz dön­dərirlər"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki ürküdülmüş vəhşi uzunqu­laqlardır ki"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ovçulardan yaxud aslan­dan qaçır­lar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Əksinə, onlardan hər bi­ri vəhy olunmuş səhifələrin məhz ona verilmə­sini istəyir"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Xeyr! Əksinə, onlar Axi­rətdən qorxmurlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Xeyr! Bu Quran bir nə­sihətdir"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "İstəyən onu xatır­layar"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bilin ki, Allah istəmə­dik­cə onlar xatırlaya bil­məz­lər. Müt­ləq qüd­rətindən qorxub çə­kin­məyə layiq olan da, bağış­la­mağa qadir olan da Odur"
        }
    ]
}