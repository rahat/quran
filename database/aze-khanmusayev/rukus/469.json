{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Vaqiə qopacağı zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun qopduğunu heç kəs dana bilməz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, bəzilərini alçaldacaq, bə­zilərini də ucaldacaq"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddətlə titrədiyi za­man"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar parça-parça olub ovxalan­dığı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "və ətrafa səpələnmiş toz-torpağa döndüyü zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "siz üç dəstəyə ayrılacaq­sınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağ tərəf sahibləri. Nə xoş­bəxtdir sağ tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol tərəf sahibləri. Nə bəd­bəxtdir sol tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Xeyirxah işlərdə öndə ge­dənlər, Cən­nətdə də öndə­dirlər"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allaha yaxın olan­lar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nəim cən­nətlərində qala­caq kimsələr­dir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların çoxu əvvəlki nə­sillərdən"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "az bir qismi də axırın­cı­lardandır"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Onlar bəzənmiş taxtlar üstündə"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "qarşı-qarşıya əyləşib dir­səklənə­cəklər"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların ətrafında həmi­şəcavan xidmətçi oğlanlar fır­lana­caq­lar –"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "çeşmə şərabı ilə dolu ba­dələr, bar­daqlar və qədəhlərlə –"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ondan başları ağrımaz və məst ol­mazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "bəyənib seçdikləri mey­vələr"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "və istədikləri quş əti ilə hərlənə­cəklər"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onları iri qara gözlü hu­rilər göz­ləyir –"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "sədəf içində saxlanılmış mirvariyə bənzər hurilər"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Bu, onların etdikləri əməl­lərin mü­kafatı olacaq"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Onlar orada nə boş söz, nə də gü­naha səbəb olan söh­bət eşi­də­cək­lər"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Ancaq: “Salam! Salam!”– sözləri eşidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağ tərəf sahibləri. Nə xoşbəxtdir sağ tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar tikansız sidr ağac­ları arasın­da"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "meyvələri salxım-salxım asılmış banan ağacları altında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzanmış kölgəliklərdə"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "daim axan sular kəna­rın­da"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "çoxlu meyvələr –"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "tükənməz və qadağan edilməyən meyvələr içində"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "və hündür döşəklər üs­tündə ola­caqlar"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz Cənnətdəki qadınları yeni bi­çimdə yaradacağıq"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakirə qızlar edə­cəyik –"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "ərlərini sevən, həmya­şıd­lar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bunlar sağ tərəf sahib­lə­ri üçün­dür"
        }
    ]
}