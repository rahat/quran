{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ən Uca Rəbbinin adına təriflər de"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O Rəbbin ki, hər şeyi ya­ra­dıb ka­milləşdirdi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O Rəbbin ki, hər şeyin mü­qəddəratını əzəldən müəy­yən e­dərək yol göstərdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rəbbin ki, otlağı cü­cərt­di"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu qaralmış sa­ma­na çevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Biz sənə Quranı oxudacağıq və sən onu unutmayacaqsan"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allahın istədi­yin­dən başqa. Şübhəsiz ki, Allah aşkarı da, gizlini də bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Səni ən asan olana mü­vəf­fəq edə­rik"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Xatırlatmanın fayda ver­diyini gör­sən, onlara xatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allahdan qorxanlar öyüd-nəsihət gö­türərlər"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ən bədbəxt kimsələr isə onu qu­laqardına vurarlar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsə ki, Cəhənnəmə atılacaq"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O orada nə öləcək, nə də yaşaya bil­əcək"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Günahlardan təmizlənən kimsə isə uğur qazanmışdır"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "O kimsə ki, Rəbbinin adı­nı xatırla­yıb namaz qılmışdır"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Xeyr, siz dünya həyatını olduqca üstün tutursunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Axirət isə daha xeyirli və daha sürəklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Həqiqətən də, bu, əv­vəl­ki səhifə­lərdə bildirilmişdir –"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahimin və Musanın sə­hifələ­rində"
        }
    ]
}