{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaradan Rəbbinin adı ilə oxu"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı qan laxtasından yaratdı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oxu! Sənin Rəbbin mü­qa­yisəsiz sə­xavətə malikdir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "O, qələmlə yazmağı öy­rət­di"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmədiklərini öy­rətdi"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Xeyr! İnsan, doğrudan da, həddini aşır –"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "özünün ehtiyacsız oldu­ğunu zənn etdiyinə görə"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Axı son dönüşün Rəb­bi­nədir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gördünmü o kəsi ki, ma­ne olur –"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "bir bəndəyə namaz qıl­dı­ğı zaman"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Söylə görək, əgər o bən­də doğru yoldadırsa"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "yaxud Allahdan qorx­ma­ğı əmr edirsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Söylə görək, əgər o kafir haqqı yalan sayıb üz dön­də­rib­sə, on­da necə olsun"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Məgər o bilmir ki, Allah görür"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Xeyr! Əgər yaramaz əmə­linə son qoy­­ma­sa, Biz onun kə­ki­lin­dən tuta­cağıq –"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "yalançı, günahkar kəki­lindən"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Qoy öz yığnağını ça­ğır­sın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz də əzab mələklərini çağıra­cağıq"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Xeyr, sən ona qulaq as­ma! Səcdə qıl və Allaha ya­xınlaş"
        }
    ]
}