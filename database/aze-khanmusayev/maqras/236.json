{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Göy yarılacağı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "və Rəbbini dinləyib bo­yun əyməyə hazır olacağı zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz ediləcəyi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "içindəkiləri kənara atıb bo­şalacağı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "və Rəbbini dinləyib bo­yun əyməyə hazır olacağı za­man"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Sən, həqiqətən də, səy göstərib Rəbbinə tərəf can atır­san. Sən Onunla qarşı­laşacaqsan"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağ əlinə ve­riləcəksə"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "o, yüngül sorğu-suala tu­tulacaq"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "və sevincək öz ailəsinə qa­yıda­caq"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin kitabı arxa tərə­fin­dən ve­riləcəksə"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "o özünə ölüm diləyəcək"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "və alovlu oda atılacaq­"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Sözsüz ki, o, dünyada ikən öz ailə­sində sevinc içində idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "və elə güman edirdi ki, Rəbbinin hüzuruna qayıtmaya­caq"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Xeyr! Sözsüz ki, Rəbbi onu gö­rürdü"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "And içirəm şəfəqə"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "gecəyə və onun ağuşuna aldıq­larına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "bədirlənmiş on dörd ge­cə­lik aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz mütləq haldan-hala keçib də­yişəcəksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara nə olub ki, iman gətir­mirlər"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "və onlara Quran oxun­duqda səcdə etmirlər"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Əksinə, küfr edənlər haq­qı yalan sayırlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların nəyi giz­lət­diklərini çox yaxşı bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Elə isə onları ağrılı-acılı bir əzab­la müjdələ"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "iman gətirib yaxşı işlər görənlər istisna olmaqla! On­lar üçün tü­kənməz mükafatlar ha­zırlanmışdır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "And olsun bürclü göyə"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "And olsun vədə verilmiş günə"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "And olsun şahidlik edənə və edi­lənə"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Məhv olsun xəndək sahibləri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Odunla alovlandırılmış xəndəklər"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar o xəndəklərin başında otu­rub"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "möminlərə verdikləri işgən­cə­ləri seyr edirdilər"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Kafirlər onlardan yalnız Qüdrətli, Tərifəlayiq Allaha iman gə­tir­diklərinə görə inti­qam alırdılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Halbuki, göylərdə və yer­də müt­ləq hakimiyyət Ona məx­sus­dur. Allah hər şeyə Şa­hiddir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "O kəslər ki, mömin kişi və qadın­ları yan­dırmaqla sı­na­ğa çək­miş, sonra da tövbə et­məmişlər, onlara Cəhənnəm əzabı və onları yan­dırıb-yaxa­caq od əzabı hazırlanmışdır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Şübhəsiz ki, iman gəti­rib yaxşı işlər görənlər üçün ağac­la­rı al­tından çaylar axan cən­nətlər var. Bu, böyük mü­vəf­fə­qiy­yət­dir"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrudan da, Rəbbinin günah­karları yaxalaması çox şid­dət­li­dir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Həqiqətən, O, hər şeyi il­kin yara­dır və onu yenidən bər­pa edir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bağışlayan da, Sevən də Odur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ərşin sahibidir, Şan-şöh­rətlidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "İstədiyini edəndir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Qoşunlar haqqında əh­valat sənə gəlib çatıbmı"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firon və Səmud qoşun­la­rının"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Xeyr, küfr edənlər haqqı yalan saymaqdadırlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arxadan əha­tə et­mişdir"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Bəli, bu şanlı Qurandır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "O, mühafizə edilən löv­hədədir"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "And olsun səmaya və ge­cə yolçu­suna"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Sən nə bilirsən ki, gecə yolçusu nədir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Bu, qaranlıqları dəlib ke­çən ul­duz­dur"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Elə bir kimsə yoxdur ki, onun üzərində gözətçi olma­sın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Qoy insan nədən yara­dıl­dığına bir baxsın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "İnsan axıdılan nütfədən yaradıl­mışdır"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bu nütfə bel və köks sü­mükləri arasından çıxır"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Şübhəsiz ki, Allah onu di­rildib qay­tarmağa qadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sirlərin sınaqdan keçiri­lə­cəyi gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "onun nə bir qüvvəsi, nə də bir köməkçisi olar"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "And olsun yağmurla qa­yıdan göyə"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "And olsun növbənöv bit­kilərlə ya­rılan yerə"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Həqiqətən, bu, haqqı ba­tildən ayırd edən bir kə­lamdır"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, əyləncə də deyil"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Həqiqətən, kafirlər hiylə qururlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Mən də hiylə qururam"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Kafirlərə hələ möhlət ver! Onlara bir az da möhlət ver"
        }
    ]
}