{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Peyğəmbər qaşqabağını tökdü və üzünü çevirdi –"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "yanına korun gəldiyinə görə"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nə bilirdin ki, bəlkə o gü­nahlardan təmizlənəcəkdi"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "və yaxud nəsihət dinlə­yib fayda­lanacaqdı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Nəsihətə ehtiyacı olma­ya­na gəlincə isə"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sən ona diqqət yetirirsən"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun təmizlənməməyi­nin sənə bir aidiyyəti yox­dur"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Səy göstərib sənin yanına gələn"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allahdan qorxan kimsəyə gəlincə"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "sən ona məhəl qoymursan"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Xeyr! Şübhəsiz ki, bu, bir nəsi­hətdir"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Kim istəsə, qoy onu xa­tırlayıb ibrət alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Bu Quran kəramətli sə­hi­fələr­də"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yüksək və pak səhifələr­də­dir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Bu səhifələr elçilərin əl­lə­rində –"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "möhtərəm və müti olan­ mələklərin əllə­rindədir"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Qoy ölsün kafir insan! O necə də nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Qoy baxıb görsün, Allah onu nədən yaradıb"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Allah onu nütfədən ya­ratdı və onu müəyyən şəklə saldı"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da onun yolunu asanlaş­dırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürüb qə­bi­rə yerləş­dirdi"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra da istədiyi vaxt onu yenidən dirildə­cək"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Xeyr! O, hələ də Allahın ona bu­yurduğunu yerinə ye­tir­mə­miş­dir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Qoy insan yediyinə diq­qət yetir­sin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Həqiqətən, yağışı bol-bol Biz yağ­dırırıq"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra da yeri çat-çat ya­rıb"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "orada taxıl yetişdiririk"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Habelə üzüm və yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytun və xurma ağac­la­rı"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "sıx-sıx bağlar"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyvələr və otlar da bi­tiririk"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Bu nemətlər sizin isti­fa­də­niz və mal-qaranızın fayda­lan­ması üçün­dür"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Qulaqbatırıcı bir səs gə­ləndə –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "o gün insan qaçacaq öz qarda­şından"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, atasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "həyat yoldaşından və övladla­rından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün onlardan hər biri­nin yetə­rincə işi olacaq­"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün neçə-neçə üzlər par­layacaq"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "güləcək və fərəhlənə­cək­"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gün neçə-neçə üzlərə toz-torpaq hopacaq"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "onları zülmət bürüyə­cək­"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Məhz onlar kafirlər, gü­nah­kar­lardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Günəş sarınacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ulduzlar soluxub sönəcə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar hərəkətə gətirilə­cə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "boğaz dəvələr başlı-başı­na qala­caq­ları zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vəhşi heyvanlar bir yerə toplanacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dənizlər alovlanacağı za­man"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "hər kəs öz tayına qo­vuş­durulacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "diri-diri torpağa basdırıl­mış qız uşağı soruşulacağı za­man –"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hansı günaha görə öldü­rül­müş­dür"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "səhifələr açılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "göy qopardılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cəhənnəm alovlandırı­la­cağı za­man"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "və Cənnət möminlərə ya­xınlaşdı­rılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "hər kəs bu gün üçün özü­nə nə tə­darük etdiyini bilə­cək­dir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "And içirəm gecə çıxıb gün­düz batan ulduzlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "seyrə çıxıb gizlənən səy­yarələrə"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "qaralmaqda olan gecəyə"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "və açılmaqda olan səhə­rə"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Həqiqətən, bu, göndər­di­yimiz möh­tə­rəm bir elçinin sö­zü­dür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi ki, qüvvətlidir, Ər­şin sahibi yanında böyük hör­­mət sa­hi­bidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "orada itaət ediləndir, eti­barlı­dır"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin dostunuz Muhəm­məd di­vanə deyil"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "O, Cəbraili aydın üfüqdə gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, qeybdən gələn xəbərləri sizdən əsirgəyən de­yil"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu Quran daşqalaq olun­muş şey­tanın sözü də deyildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Elə isə ondan üz döndə­rib hara ge­dirsiniz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, aləmlərə yalnız bir nəsihətdir –"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "sizlərdən doğru yolda ol­maq istə­yənlər üçün"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Aləmlərin Rəbbi Allah istəmə­yincə, siz istəyə bilməz­siniz"
        }
    ]
}