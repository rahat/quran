{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "(anaittaiyum) mutikkollum (irunta) iravin mitu cattiyamaka"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "pirakacamulla pakalin mitu cattiyamaka"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "anaiyum pennaiyum pataittavan mitu cattiyamaka"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "(manitarkale!) Niccayamaka unkal muyarcikal palavaraka irukkinrana"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "akave, (unkalil) evar tanam ceytu (allahvukkup) payantu"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "(inta markkattilulla) nalla kariyankalaiyum (nallatenre) unmaiyakki vaikkiraro"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "avarukku corkkap pataiyai nam elitakkit taruvom"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "evan kancattanam ceytu (allahvaiyum) porutpatuttatu"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "(im'markkattilulla) nalla kariyankalaiyum poyyakki vaikkirano"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Avanukkuk (kastattirkuriya) narakap pataiyaittan nam elitakki vaippom"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "avan (narakattil) viluntuvittal, avanutaiya porul avanukku (oru) payanumalikkatu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "niccayamaka nervaliyai arivippatu nam'mitutan katamaiyakum"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "niccayamaka im'maiyum, marumaiyum namakke contamanavai"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "(makkavacikale!) Koluntu vitteriyum neruppaip parri nan unkalukku accamutti eccarikkai ceykiren"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "mikka turpakkiyam utaiyavanait tavira, (marrevanum) atarkul cellamattan"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "avan (nam vacanankalaip) poyyakkip purakkanittuvituvan"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "iraiyaccamutaiyavartan atiliruntu tappittukkolvar"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "avar (pavattiliruntu tannaip) paricuttamakkik kolvatarkaka tan porulai(t tanamaka)k kotuppar"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "tan patil nanmai ceyyakkutiyavaru evarutaiya nanriyum tan mitu irukkatu"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "iruppinum, mikka melana tan iraivanin tirumukattai virumpiye tavira (veru etarkakavum tanam ceyya mattar)"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "(iraivan avarukku alikkum kotaiyaip parrip) pinnar avarum tiruptiyataivar"
        }
    ]
}