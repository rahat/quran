{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "(ulaka mutivukkakac) curiyanin pirakacam manka vaikkappatumpotu"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "natcattirankal utirntuvitumpotu"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "malaikal atanitankalil iruntu akarrappatum potu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "(inta amalikalal pattumata) karppamatainta ottakankal (kavanippinri) vitappatumpotu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kattu mirukankal (payantu urkalil vantu) onrukutumpotu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "katal nir neruppaka marrappatumpotu. (Ivvaru ulakam mutivuperru, vicaranaik kalam erpatum)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "appotu uyirkal utalutan (mintum) cerkkappatum"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "appotu (uyirutan) putaikkappatta pen kulantaikalai nokki ketkappatum"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "â€˜â€˜enta kurrattirkaka ninkal (uyirutan putaikkappattuk) kolai ceyyappattirkal?'' Enru"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "appotu (vicaranaikkaka manitarkalutaiya) etukal virikkappatum"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "appotu vanam (pilantu) akarrappattuvitum"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "appotu narakam erikkappatum"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "appotu corkkam camipamakak kontu varappatum"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(annalil) ovvor atmavum (nanmaiyo timaiyo) tan ceytu kontu vantiruppatai nankarintu kollum"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "(Manitarkale!) Cenravaliye melum cellum natcattirankal mitu cattiyamaka"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "tonri maraiyum (val) natcattirankal mitu cattiyamaka"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "celkinra iravin mitum cattiyamaka"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "utayamakum kalaiyin mitum cattiyamaka"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "niccayamaka (tiru kur'an ennum) itu mikka kanniyamulla (jiprayil ennum) oru (vanavat) tutar mulam kurappattatakum"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "avar mikka palavan. Avarukku arsutaiyavanitattil perum pataviyuntu"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(avar avvitattilulla vanavarkalin) talaivar; mikka nampikkaiyutaiyavar"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "(makkavacikale! Nam tutarakiya) unkal tolar paittiyakkararalla"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "niccayamaka avar (jiprayilai) telivana vanattin kotiyil meyyakave kantar"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "(accamayam avar kanta) maraivanavarrai (arivippatil) kancattanam ceypavaralla"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "innum, itu veruttappatta saittanin collumalla"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "akave, (itaivittu) ninkal enku cellukirirkal"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "itu ulakattar anaivarukkum oru nallupatecame tavira verillai"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "unkalil evar nerana pataiyil cella virumpukiraro avarukku (itu payanalikkum)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "eninum, ulakattarin iraivanakiya allah natinal tavira, ninkal (nallunarcci pera) virumpamattirkal"
        }
    ]
}