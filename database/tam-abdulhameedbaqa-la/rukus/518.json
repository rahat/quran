{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "(napiye!) Etaipparri avarkal (tankalukkul) kettuk kolkinranar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "makattana ceytiyaip parriya(llava)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ataipparri avarkal (unmaikku) muranana apippirayam kontirukkinranar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "(Tankal ennam tavaru enpatai) aticikkirattil avarkal nanku arintu kolvarkal"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "pinnar, avaciyam aticikkirattil (atan unmaiyai) nanku arintu kolvarkal"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "(ivvalavu periya) pumiyai nam (unkalukku) virippaka amaikka villaiya"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "innum, (atil nam) malaikalai mulaikalaka (niruttavillaiya)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "joti jotiyaka unkalai name pataittirukkirom"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "name unkal nittiraiyai (unkalukku) oyvaka akkinom"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "name iravai (unkalukku)p porvaiyaka akkinom"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "name pakalai (unkal) valvait tetikkollum neramakkinom"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "unkalukku melirukkum palamana elu vanankalaiyum name amaittom"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "atil (curiyanaip) pirakacikkum tipamaka amaittom"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "karmekattiliruntu perum malaiyai poliyac ceykirom"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ataik kontu taniyankalaiyum purpuntukalaiyum mulaippikkirom"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "innum, kilaikal atarnta colaikalaiyum (urpatti ceykirom)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "niccayamaka (ivarkal tarkkittu nirakarittuk kontirukkum) antat tirppu naltan (vicaranaikkuk) kurippitta kalamakum"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "(atarkaka) sur (ennum ekkalam) utappatum nalil ninkal kuttam kuttamaka varuvirkal"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "vanam tirakkappattu (atil) pala valikal erpattu vitum"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "malaikal (tam itattiliruntu) peyarkkappattu tultulaki (parantu) vitum"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "niccayamaka narakam (intap pavikalin varavai) etirparttuk kontirukkiratu"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "(pavikalakiya) inta aniyayakkararkal tankumitam atuve"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "atil avarkal ninta kalankal tankivituvarkal"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "atil kotikkum niraiyum cil calattaiyum tavira avarkal (veru oru) kutipanattaiyum, kulircciyaiyum cuvaikka mattarkal"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Atil kotikkum niraiyum cil calattaiyum tavira avarkal (veru oru) kutipanattaiyum, kulircciyaiyum cuvaikka mattarkal"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "itu (avarkal ceyalukkut) takumana kuliyakum"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "enenral, niccayamaka avarkal (marumaiyin) kelvi kanakkai nampave illai"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "avarkal nam vacanankalai mika alatciyamakap poyppittarkal"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "eninum, ivai anaittaiyum nam (nam kurippup) puttakattil pativu ceytu kontom"
        },
        {
            "chapter": 78,
            "verse": 30,
