{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Madheroje emrin e Zotin tend te Larte"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "I cili krijoi dhe persosi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Dhe i cili percaktoi e orientoi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Dhe i cili mundesoi mbirjen e kulloses"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "E pastaj ate e beri mbeturine te zeze"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ne do te lexojme ty e nuk do te harrosh (Kurâ€™anin)"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Pervec asaj qe All-llahu deshiron. Ai e di te hapten e te fshehten"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Dhe Ne do ta lehtesojme ty me te lehten"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Pra keshillo aty ku keshilla ben dobi"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Do te keshillohet ai qe ka frike"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ndersa do te shmanget me i keqi"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "I cili do te hyje ne zjarrin e madh"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Pastaj nuk do te vdese ne te, por as nuk do te jetoje"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ka shpetuar ai qe eshte patruar"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Qe e perkujton emrin e Zotit te vet dhe falet"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Po ju i jepni perparesi jetes se dunjase"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ndersa ahireti (amshimi) eshte me i mire dhe e perjetshem"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Vertet kjo ishte ne broshurat e lashta"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ne broshurat e Ibrahimit dhe te Musait"
        }
    ]
}