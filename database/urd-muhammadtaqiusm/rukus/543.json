{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "(یاد کرو) وہ واقعہ جو دل دہلا کر رکھ دے گا۔"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "کیا ہے وہ دل دہلانے والا واقعہ ؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "اور تمہیں کیا معلوم وہ دل دہلانے والا واقعہ کیا ہے ؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "جس دن سارے لوگ پھیلے ہوئے پروانوں کی طرح ہوجائیں گے۔"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "اور پہاڑ دھنکی ہوئی رنگین اون کی طرح ہوجائیں گے۔"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "اب جس شخص کے پلڑے وزنی ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "تو وہ من پسند زندگی میں ہوگا۔"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "اور وہ جس کے پلڑے ہلکے ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "تو اس کا ٹھکانا ایک گہرا گڑھا ہوگا۔"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "اور تمہیں کیا معلوم کہ وہ گہرا گڑھا کیا چیز ہے ؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "ایک دہکتی ہوئی آگ"
        }
    ]
}