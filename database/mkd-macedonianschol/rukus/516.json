{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Се колнам во оние (мелеци) коишто еден по друг се праќаат"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "па како виор итаат"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "и во оние кои објавуваат"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "па раздвојуваат"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "и Објавата ја доставуваат"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "оправдување или опомена"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "сигурно ќе биде тоа со што ви се заканува"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Кога ѕвездите сјајот ќе го изгубат"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "и кога небото ќе се отвори"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "и кога планините во прав ќе се здробат"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "и кога пратениците во одредено време ќе се зберат"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "„До кој ден е одложено тоа?“"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "„До Судниот ден!“"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "А знаеш ли ти што е Судниот ден"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Зарем Ние не ги уништивме древните народи"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "и по нив и оние коишто по нив доаѓаа"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Исто така ќе постапуваме со сите грешници"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Зарем од незначителна течност не ве создаваме"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "која на сигурно место ја ставаме"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "до рокот одреден"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Таква е Нашата моќ; а како ли сме Ние само моќни"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Зарем не ја направивме Ние Земјата собиралиште"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "на живите и мртвите"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "и на неа неподвижни високи планини поставивме, и зарем не ви даваме Ние слатка вода да пиете"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Одете кон тоа што за невистина го сметавте"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "одете кон чадот во три пламена раздвоен"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "кој ладовина нема да дава и кој од пламенот нема да заштитува"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Тој како од кули ќе фрла искри"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "како да се камили жолти"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Ова е Денот во којшто тие нема ни да прозборат"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "и правдањето нема да им биде дозволено"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Тешко им тој Ден на тие што негираа"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ова е Судниот ден, и вас и народите древни ќе ги збереме"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "па ако знаете со некое лукавство да се послужите, обидете се против Мене"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Тешко им тој Ден на тие што негираа"
        }
    ]
}