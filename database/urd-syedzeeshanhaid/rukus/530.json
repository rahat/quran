{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "کیا تمہیں ڈھانپ لینے والی قیامت کی بات معلوم ہے"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "اس دن بہت سے چہرے ذلیل اور رسوا ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "محنت کرنے والے تھکے ہوئے"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "دہکتی ہوئی آگ میں داخل ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "انہیں کھولتے ہوئے پانی کے چشمہ سے سیراب کیا جائے گا"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "ان کے لئے کوئی کھانا سوائے خادار جھاڑی کے نہ ہوگا"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "جو نہ موٹائی پیدا کرسکے اور نہ بھوک کے کام آسکے"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "اور کچھ چہرے تر و تازہ ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "اپنی محنت و ریاضت سے خوش"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "بلند ترین جنت میں"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "جہاں کوئی لغو آواز نہ سنائی دے"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "وہاں چشمے جاری ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "وہاں اونچے اونچے تخت ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "اور اطراف میں رکھے ہوئے پیالے ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "اور قطار سے لگے ہوئے گاؤ تکیے ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "اور بچھی ہوئی بہترین مسندیں ہوں گی"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "کیا یہ لوگ اونٹ کی طرف نہیں دیکھتے ہیں کہ اسے کس طرح پیدا کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "اور آسمان کو کس طرح بلند کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "اور پہاڑ کو کس طرح نصب کیا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "اور زمین کو کس طرح بچھایا گیا ہے"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "لہذا تم نصیحت کرتے رہو کہ تم صرف نصیحت کرنے والے ہو"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "تم ان پر مسلط اور ان کے ذمہ دار نہیں ہو"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر جو منھ پھیر لے اور کافر ہوجائے"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "تو خدا اسے بہت بڑے عذاب میں مبتلا کرے گا"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "پھر ہماری ہی طرف ان سب کی بازگشت ہے"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "اور ہمارے ہی ذمہ ان سب کا حساب ہے"
        }
    ]
}