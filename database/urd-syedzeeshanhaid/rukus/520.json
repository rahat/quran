{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "قسم ہے ان کی جو ڈوب کر کھینچ لینے والے ہیں"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "اور آسانی سے کھول دینے والے ہیں"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "اور فضا میں پیرنے والے ہیں"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "پھر تیز رفتاری سے سبقت کرنے والے ہیں"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "پھر امور کا انتظام کرنے والے ہیں"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "جس دن زمین کو جھٹکا دیا جائے گا"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "اور اس کے بعد دوسرا جھٹکا لگے گا"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "اس دن دل لرز جائیں گے"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "آنکھیں خوف سے جھکیِ ہوں گی"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "یہ کفاّر کہتے ہیں کہ کیا ہم پلٹ کر پھر اس دنیا میں بھیجے جائیں گے"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "کیا جب ہم کھوکھلی ہڈیاں ہوجائیں گے تب"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "یہ تو بڑے گھاٹے والی واپسی ہوگی"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "یہ قیامت تو بس ایک چیخ ہوگی"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "جس کے بعد سب میدان هحشر میں نظر آئیں گے"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "کیا تمہارے پاس موسٰی کی خبر آئی ہے"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "جب ان کے رب نے انہیں طویٰ کی مقدس وادی میں آواز دی"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "فرعون کی طرف جاؤ وہ سرکش ہوگیا ہے"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "اس سے کہو کیا یہ ممکن ہے تو پاکیزہ کردار ہوجائے"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "اور میں تجھے تیرے رب کی طرف ہدایت کروں اور تیرے دل میں خوف پیدا ہوجائے"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "پھر انہوں نے اسے عظیم نشانی دکھلائی"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "تو اس نے انکار کردیا اور نافرمانی کی"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "پھر منہ پھیر کر دوڑ دھوپ میں لگ گیا"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "پھر سب کو جمع کیا اور آواز دی"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "اور کہا کہ میں تمہارا رب اعلیٰ ہوں"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "تو خدا نے اسے دنیا و آخرت دونو ںکے عذاب کی گرفت میں لے لیا"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "اس واقعہ میں خوف خدا رکھنے والوں کے لئے عبرت کا سامان ہے"
        }
    ]
}