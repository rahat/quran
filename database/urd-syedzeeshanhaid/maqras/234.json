{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "اس نے منھ بسو رلیا اور پیٹھ پھیرلی"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "کہ ان کے پاس ایک نابیناآگیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "اور تمھیں کیا معلوم شاید وہ پاکیزہ نفس ہوجاتا"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا نصیحت حاصل کرلیتا تو وہ نصیحت ا س کے کام آجاتی"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "لیکن جو مستغنی بن بیٹھا ہے"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "آپ اس کی فکر میں لگے ہوئے ہیں"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حالانکہ آپ پر کوئی ذمہ داری نہیں ہے اگر وہ پاکیزہ نہ بھی بنے"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "لیکن جو آپ کے پاس دوڑ کر آیاہے"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور وہ خوف خدا بھی رکھتاہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "آپ اس سے بے رخی کرتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "دیکھئے یہ قرآن ایک نصیحت ہے"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "جس کا جی چاہے قبول کرلے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "یہ باعزّت صحیفوں میں ہے"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "جو بلند و بالا اور پاکیزہ ہے"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ایسے لکھنے والوں کے ہاتھوں میں ہیں"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "جو محترم اور نیک کردار ہیں"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "انسان اس بات سے مارا گیا کہ کس قدر ناشکرا ہوگیا ہے"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "آخر اسے کس چیز سے پیدا کیا ہے"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "اسے نطفہ سے پیدا کیا ہے پھر اس کا اندازہ مقرر کیا ہے"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھر اس کے لئے راستہ کو آسان کیا ہے"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اسے موت دے کر دفنا دیا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہا دوبارہ زندہ کرکے اُٹھا لیا"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ہرگز نہیں اس نے حکم خدا کو بالکل پورا نہیں کیا ہے"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "ذرا انسان اپنے کھانے کی طرف تو نگاہ کرے"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "بے شک ہم نے پانی برسایا ہے"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر ہم نے زمین کو شگافتہ کیا ہے"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر ہم نے اس میں سے دانے پیدا کئے ہیں"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اور انگور اور ترکادیاں"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجور"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گھنے گھنے باغ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور میوے اور چارہ"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "یہ سب تمہارے اور تمہارے جانوروں کے لئے سرمایہ حیات ہے"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پھر جب کان کے پردے پھاڑنے والی قیامت آجائے گی"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "جس دن انسان اپنے بھائی سے فرار کرے گا"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور ماں باپ سے بھی"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور بیوی اور اولاد سے بھی"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "اس دن ہر آدمی کی ایک خاص فکر ہوگی جو اس کے لئے کافی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "اس دن کچھ چہرے روشن ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "مسکراتے ہوئے کھلے ہوئے"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور کچھ چہرے غبار آلود ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ان پر ذلّت چھائی ہوئی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "یہی لوگ حقیقتا کافر اور فاجر ہوں گے"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب چادر آفتاب کو لپیٹ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "جب تارے گر پڑیں گے"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "جب پہاڑ حرکت میں آجائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "جب عنقریب جننے والی اونٹنیاں معطل کردی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "جب جانوروں کو اکٹھا کیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "جب دریا بھڑک اٹھیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "جب روحوں کو جسموں سے جوڑ دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زندہ درگور لڑکیوں کے بارے میں سوال کیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ انہیں کس گناہ میں مارا گیا ہے"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب نامہ اعمال منتشر کردیئے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کا چھلکا اُتار دیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب جہنمّ کی آگ بھڑکا دی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب جنّت قریب تر کردی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تب ہر نفس کو معلوم ہوگا کہ اس نے کیا حاضر کیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "تو میں ان ستاروں کی قسم کھاتا ہوں جو پلٹ جانے والے ہیں"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "چلنے والے اورحُھپ جانے والے ہیں"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی قسم جب ختم ہونے کو آئے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی قسم جب سانس لینے لگے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "بے شک یہ ایک معزز فرشتے کا بیان ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "وہ صاحبِ قوت ہے اور صاحبِ عرش کی بارگاہ کا مکین ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "وہ وہاں قابل اطاعت اور پھر امانت دار ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور تمہارا ساتھی پیغمبر دیوانہ نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اور اس نے فرشتہ کو بلند اُفق پر دیکھا ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ غیب کے بارے میں بخیل نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ قرآن کسی شیطان رجیم کا قول نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "تو تم کدھر چلے جارہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ صرف عالمین کے لئے ایک نصیحت کا سامان ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "جو تم میں سے سیدھا ہونا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم لوگ کچھ نہیں چاہ سکتے مگریہ کہ عالمین کا پروردگار خدا چاہے"
        }
    ]
}