{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "کیا ہم نے آپ کے سینہ کو کشادہ نہیں کیا"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "اور کیا آپ کے بوجھ کو اتار نہیں لیا"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "جس نے آپ کی کمر کو توڑ دیا تھا"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "اور آپ کے ذکر کو بلند کردیا"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "ہاں زحمت کے ساتھ آسانی بھی ہے"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "بے شک تکلیف کے ساتھ سہولت بھی ہے"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "لہذا جب آپ فارغ ہوجائیں تو نصب کردیں"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "اور اپنے رب کی طرف رخ کریں"
        }
    ]
}