{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "When the sun shall be darkened"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "when the stars shall be thrown down"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "when the mountains shall be set moving"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "when the pregnant camels shall be neglected"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "when the savage beasts shall be mustered"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "when the seas shall be set boiling"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "when the souls shall be coupled"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "when the buried infant shall be asked"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "for what sin she was slain"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "when the scrolls shall be unrolled"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "when heaven shall be stripped off"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "when Hell shall be set blazing"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "when Paradise shall be brought nigh"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "then shall a soul know what it has produced"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "No! I swear by the slinkers"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "the runners, the sinkers"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "by the night swarming"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "by the dawn sighing"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "truly this is the word of a noble Messenger"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "having power, with the Lord of the Throne secure"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "obeyed, moreover trusty"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Your companion is not possessed"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "he truly saw him on the clear horizon"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "he is not niggardly of the Unseen"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "And it is not the word of an accursed Satan"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "where then are you going"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "It is naught but a Reminder unto all beings"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "for whosoever of you who would go straight"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "but will you shall not, unless God wills, the Lord of all Being"
        }
    ]
}