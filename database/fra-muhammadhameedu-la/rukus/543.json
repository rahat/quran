{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Le fracas"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Qu’est-ce que le fracas"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Et qui te dira ce qu’est le fracas"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "C’est le jour ou les gens seront comme des papillons eparpilles"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "et les montagnes comme de la laine cardee"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "quant a celui dont la balance sera lourde"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "il sera dans une vie agreable"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "et quant a celui dont la balance sera legere"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "sa mere [destination] est un abime tres profond"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Et qui te dira ce que c’est"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "C’est un Feu ardent"
        }
    ]
}