{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar/gezegenler döküldüğü"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler kaynayıp birbirine karıştırıldığı"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına çıkarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Kişi ne hazırlamış olduğunu ne ertelemiş olduğunu bilecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Kerim olan Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Seni yaratan ve seni düzenleyip sana biçim veren"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "O, seni dilediği sûrette yarattı"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Hesabı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa üzerinizde kaydediciler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Şerefli yazıcılar/Kiramen Katibin"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ne yaptığınızı biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler, elbette nimetler içinde olacaktır"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler/günahkârlar ise kesinlikle Cehennem'dedir"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Hesap günü oraya atılacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar, oradan kaybolacak değillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sana bildiren nedir? Hesap gününün ne olduğunu…"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Yine, hesap gününün ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün hiçbir kimse başkası için bir şeye sahip değildir. O gün, emir sadece Allah’ındır"
        }
    ]
}