{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Savurup tozutan rüzgarlara andolsun"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Ağır yük taşıyan (bulut)lara"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp giden (gemi)lere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "İşleri taksim edenlere (Meleklere)"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size vadedilen elbette doğrudur"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ceza günü kuşkusuz vuku bulacaktır"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Güzel yolları olan göğe andolsun"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Ki siz çelişkili bir sözler içindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Ondan çevrilen çevrilir"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Kahrolsun yalancılar"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Ki onlar, koyu bir cehalet içerisinde kalmış gafillerdir"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Ceza günü ne zaman diye sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gün, onların ateşte yakılarak azap görecekleri gündür"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Tadın azabınızı. Bu acele gelmesini istediğiniz şeydir"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Muttakiler, Cennetlerde ve pınarlardadır"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rablerinin kendilerine verdiklerini almışlardır. Çünkü onlar bundan önce iyi kimseler idiler"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri az uyuyorlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seherleri de onlar mağfiret diliyorlardı"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Onların mallarında isteyenler ve ihtiyaç sahipleri için de bir hak vardır"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Yeryüzünde gerçekten iman edecekler için ayetler vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi içinizde de, görmüyor musunuz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gökte de sizin rızkınız ve size vadedilen şeyler vardır"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Göğün ve yerin Rabbine andolsun ki, size vadedilenler, tıpkı sizin konuşmanız gibi haktır"
        }
    ]
}