{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemiş, namaz kılmamış"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamış, yüz çevirmiş"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da çalım satarak ailesine gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Helak olsun sana helak"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra sen buna layıksın"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan kendisini başı boş bırakılacağını mı sanar"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra “alaka” olmuş, Allah, onu yaratmış ve düzenlemişti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan da iki eşi, erkek ve dişiyi var etmişti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}