{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Yemin olsun şiddetle söküp alanlara…"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Kolayca çekip çıkaranlara…"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "(Gökyüzünde) Yüzdükçe yüzenlere…"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıştıkça yarışanlara…"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve işleri düzene sokanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün (birinci üflemeyle) sarsılacak olan sarsılır"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Bir diğeri onu izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün kalpler korkudan çarpar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri korku ile yere eğilmiştir"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki: \"Biz eski halimize mi döndürüleceğiz?\" derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Çürüyüp ufalanmış kemikler haline geldiğimiz zaman mı"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyleyse bu dönüş hüsrandır, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O, ancak tek bir çığlıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "İşte o zaman onlar, hemen (kendilerini mahşerde) buluverirler"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa’nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani, Rabbi ona, mukaddes Tuva’da seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun’a git, çünkü o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ve de ki: Arınmaya istekli misin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbine ileteyim de O’na karşı derinden korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona en büyük ayeti gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını dönüp, koşmaya başladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp şöyle seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yüce rabbiniz benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu dünya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "İşte bunda gerçekten korkan kimse için bir ibret vardır"
        }
    ]
}