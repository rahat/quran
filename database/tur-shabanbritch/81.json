{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, saçılıp dağıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer başıboş bırakıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kişiler (benzerleriyle) birleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen kız çocuğuna sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suçtan öldürüldüğü…"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök, sıyrılıp, ayrıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne hazırladığını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! Yemin ederim gizlenen (yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yörüngesinde gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karardığında geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Aydınlanmaya başladığında sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz o, şerefli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Güçlü, Arş'ın sahibi yanında itibarlı"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Sözü dinlenir, sonra güvenilir de"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız mecnun değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu (Cebrail’i) apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında cimri değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmuş şeytanın sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Öyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, ancak alemler için bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru yolu isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikçe siz de dileyemezsiniz"
        }
    ]
}