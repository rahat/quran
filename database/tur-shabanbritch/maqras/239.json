{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin göğsünü ferahlatıp, genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yükünü üzerinden indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o belini bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Şanını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Şüphesiz her zorlukla, bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Her zorlukla bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Öyleyse boş kaldın mı hemen (ibadetle) yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Yalnız Rabbine rağbet et"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun, İncir ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dağı’na"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve bu güvenli beldeye"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz, insanı en güzel şekilde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Daha sonra, onu aşağıların en aşağısına indirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Fakat iman edip salih amel işleyenler için eksilmeyen devamlı bir ecir vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "O halde, sana hesap gününü yalan saydıran nedir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Allah, hüküm verenlerin en üstünü değil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku! Yaratan Rabbinin adıyla"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "İnsanı alaktan yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku! Rabbin, en büyük kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalemle öğreten…"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini öğretendir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır! Şüphesiz insan azgınlık eder"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini müstağni gördüğünde"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Oysa, dönüş Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engelleyeni gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gördün mü? Eğer o hidayet üzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya (onu) takvayı emrediyorken (mi engelliyor)"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü? Eğer, yalanlamış ve yüz çevirmişse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Allah’ın gördüğünü bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır! Eğer son vermezse, elbette perçeminden yakalayıp, sürükleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, günahkâr perçeminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Haydi çağırsın meclisini"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Çağıracağız zebanileri"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır! ona itaat etme! (Allah'a) Secde et ve (Ona) yaklaş"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Şüphesiz biz, (Kur’an’ı) Kadir Gecesi'nde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir Gecesi'nin ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir Gecesi bin aydan hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh, Rabbinin izni ile her iş için o gece iner"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "Fecrin doğana kadar bir selamet olsun"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap ehlinden ve müşriklerden kâfirler, kendilerine apaçık delil gelinceye kadar (küfürlerinden) ayrılacak değiller"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "(İşte o apaçık delil) Allah tarafından gönderilen ve tertemiz sahifeleri okuyan bir elçidir"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "(Bu sahifelerde) yazılı hükümler vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kendilerine kitap verilenler, ancak kendilerine apaçık delil geldikten sonra ayrılığa düştüler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Halbuki onlara ancak, dini yalnız O'na has kılarak ve hanifler olarak Allah'a ibadet etmeleri, namaz kılmaları ve zekât vermeleri emrolunmuştu. İşte dosdoğru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap ehlinden ve müşriklerden olan kâfirler, içinde ebedi kalacakları Cehennem ateşindedirler. İşte onlar, yaratılmışların en şerlileridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "İman edip, salih amel yapanlar ise, işte onlar, yaratılmışların en hayırlıları onlardır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların mükâfatı Rableri katında, altından ırmaklar akan ve içinde ebedi kalacakları Adn cennetleridir. Allah, onlardan razı olmuştur Onlar da Allah’tan razı olmuşlardır. İşte bu mükâfat, Rabbinden korkanındır"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsan: Buna ne oluyor? dediğinde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, amelleri kendilerine gösterilmek için bölük bölük dönerler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre ağırlığınca iyilik yapmışsa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre ağırlığınca kötülük yapmışsa onu görür"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun, soluya soluya koşanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Koşarken) kıvılcım saçanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Topluluğun ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "İnsan, Rabbine karşı gerçekten nankördür"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Kendisi de buna şahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Şüphesiz onun mal sevgisi de çok şiddetlidir"
        }
    ]
}