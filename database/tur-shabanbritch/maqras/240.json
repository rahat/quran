{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi (insan), kabirlerde bulunanların çıkarılacağı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Kalplerdeki ortaya konduğunda"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Şüphesiz o gün, Rableri kendilerinden haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Şiddetle çalan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir şiddetle çalıp gelen"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Şiddetle çalıp gelenin ne olduğunu nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar dağılmış çekirgeler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar ise saçılmış yün gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, hoşnut olacağı bir hayat içindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun da sığınacağı yer Haviye'dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sana bildiren ne"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çoklukla övünmek sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Mezarlara (ölüp) gelinceye dek"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır! İleride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır! Kesin bir bilgiyle bilseniz (kaçınırdınız)"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Elbette Cehennem'i görürsünüz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Nitekim onu, yakın bir gözle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra, o gün nimetlerden hesaba çekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun asra"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "İnsanlık hüsrandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edenler ve salih amel yapanlar, birbirlerine hakkı ve sabrı tavsiye edenler müstesna"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan çekiştirip duran, kaş göz hareketleriyle alay eden her kişinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Mal toplayıp, onu tekrar tekrar sayan"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Zannediyor ki malı kendisini kalıcı kılacak"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır! Kesinlikle o Hutame'ye atılacak"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah’ın tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Kalplere işleyen"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O üzerlerine kapatılacak"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzatılmış sütunlar arasında"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin, fil sahiplerini ne yaptığını görmedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların üzerine sürü sürü kuşlar gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Pişirilmiş çamurdan taşlar atan"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Onları yenilip çiğnenmiş ekin gibi yaptı"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş’in ülfeti, güvenliği için (fil sahiplerinin başına gelenler geldi)"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Onların kış ve yaz yolculuklarının güvenliğin için…"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu beyt/Kâbe’nin Rabbine ibadet etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Onları açlıktan doyuran ve korkularından emin kılana…"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Hesap gününü yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Yetimi itip kakan işte odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Düşkünü doyurmaya teşvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Öyleyse yazıklar olsun o namaz kılanlara"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Kıldıkları namazdan gafil olanlara"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Gösteriş yapanlara"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ufak tefek (ödünç vermeye) bile engel olanlara…"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Öyleyse sen de Rabbin için namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Gerçek şu ki sana kin besleyen kesiktir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: Ey Kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin ibadet ettiğinize ibadet etmem"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim ibadet ettiğime ibadet edenler değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben sizin ibadet ettiğinize ibadet edici değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim ibadet ettiğime ibadet ediciler değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah’ın yardım ve fetih geldiği zaman"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "İnsanların akın akın Allah’ın dinine girdiğini gördüğün zaman"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Hemen, hamd ederek Rabbini tesbih et ve O’ndan bağışlanma dile. Şüphesiz O, çok bağışlayıcıdır"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Elleri kurusun Ebu Leheb’in, kurudu da"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ona, malı ve kazandıkları fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alevli bir ateşe girecektir"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da, odun taşıyıcısı…"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda hurma lifinden bir halat ile…"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah Samed'dir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Doğurmadı ve doğrulmadı"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Onun hiçbir dengi yoktur"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: “Ben sabahın Rabbine sığınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Çöktüğü zaman karanlığın şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Düğümlere üfleyenlerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Haset ettiği zaman hasetçinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: İnsanların Rabbine sığınırım"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "İnsanların melikine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "İnsanların ilahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Sinsi/(Allah anıldığında geri, kaçan) vesvesecinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "İnsanların gönüllerine vesvese sokan"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Cinlerden ve insanlardan"
        }
    ]
}