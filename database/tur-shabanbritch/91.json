{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun Güneş’e ve aydınlığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu takip eden Ay’a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "(Yeryüzünü) (ışığıyla) ortaya çıkaran gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "(Yeryüzünü) örten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Ve nefse ve ona bir düzen içinde biçim verene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kötülüğü ve korunmayı ilham edene"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Ki onu arındıran kurtuluşa ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kötülüğe gömen ise mahvolmuştur"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud azgınlığı sebebiyle yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri atılmıştı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın Rasûlü onlara: \"Allah'ın devesine ve onun su hakkına dokunmayın!\" dedi"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "O’nu yalanladılar ve deveyi kestiler de Rableri suçları sebebiyle azabı üzerilerine eşit olarak indirdi (kimse kurtulamadı)"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bunun sonucundan da korkmaz"
        }
    ]
}