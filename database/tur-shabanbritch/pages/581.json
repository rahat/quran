{
    "pages": [
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Ve suyu sağlam bir yere yerleştirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Buna gücümüz yetti. Ne güzel güç yetirenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryüzünü toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Dirilere ve ölülere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yüksek dağlar yaratıp size tatlı su içirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yalanladığınıza yürüyün"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Yürüyün üç kollu (ateşin) gölgesine"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Gölgelendirmez, alevden de korumaz"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, köşk gibi kocaman kıvılcım saçar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Her bir kıvılcım, sanki birer sarı deve gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konuşamayacakları bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Özür dilemeleri için onlara izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, ayırma günüdür Sizi ve evvelkileri bir araya toplarız"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eğer bana karşı bir tuzağınız varsa, onu hemen kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Allah’tan sakınanlar ise gölgeler içinde ve pınar başlarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Arzu ettikleri meyveler…"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınıza karşılık afiyetle yiyin, için"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, iyilik yapanları işte böyle ödüllendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Yalanlayanların o gün vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin ve azıcık faydalanın, nasılsa siz suçlusunuz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara, “Rükû edin!” denildiği zaman, rükû etmezlerdi"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Onlar artık bundan (Kur'an'dan) sonra hangi söze iman edecekler"
        }
    ]
}