{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "Emrimiz ancak bir tek emirdir. Göz kırpması gibidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Andolsun ki benzerlerini helak ettik. İbret alan var mı"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Onların yaptıkları her şey kitaplarda (kayıtlardadır)"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Büyük, küçük; satır satır"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Takva sahipleri Cennetlerde ve ırmaklar içindedir"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Güçlü bir hükümdarın hak meclisindedirler"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur’anı öğretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "İnsanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı öğretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Güneş ve Ay bir hesaba bağlıdır"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler, ağaçlar da secde ederler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "(Allah) Göğü yükseltip ve mizanı/adaleti koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "O halde ölçüde haddi aşmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartıyı adaletle yapın, teraziyi eksik tutmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Allah yeri, canlılar için döşedi"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyveler, salkım salkım hurmalar"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Saplı ve kabuklu hububat ve hoş kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Öyleyse (ey cinler ve insanlar) Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "İnsanı iyice pişmiş gibi kuru balçıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de yalın bir ateşten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "O halde Rabbinizin hangi nimetini yalanlayabilirsiniz"
        }
    ]
}