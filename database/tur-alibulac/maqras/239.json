{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz, senin göğsünü yarıp-genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve yükünü indirip-atmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o, senin belini bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin zikrini (şanını) yüceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, gerçekten zorlukla beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gerçekten güçlükle beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Şu halde boş kaldığın zaman, durmaksızın (dua ve ibadetle) yorulmaya-devam et"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnızca Rabbine rağbet et"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "İncire ve zeytine andolsun"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina dağına"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve şu emin beldeye (güvenilir şehre)"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Doğrusu, Biz insanı en güzel bir biçimde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Sonra aşağıların aşağısına çevirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Ancak iman edip salih amellerde bulunanlar başka; onlar için kesintisi olmayan bir ecir vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Öyleyse bundan sonra, hangi şey sana dini yalanlatabilir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Allah hükmedenlerin hakimi değil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbin adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir alak'tan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin en büyük kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Ki O, kalemle (yazmayı) öğretendir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini öğretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır; gerçekten insan, azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini müstağni gördüğünden"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Şüphesiz, dönüş yalnızca Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engellemekte olanı gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kıldığı zaman bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gördün mü? Ya o (kul) doğru yol üzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Ya da takvayı emrettiyse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü? Ya (bu engellemek isteyen) yalanlıyor ve yüz çeviriyor ise"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O, Allah'ın gördüğünü bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır; eğer o, (bu tutumuna) bir son vermeyecek olursa, andolsun, onu perçeminden tutup sürükleyeceğiz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı, günahkar olan alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman da meclisini (yakın çevresini ve yandaşlarını) çağırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağıracağız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır; ona boyun eğme (Rabbine) Secde et ve yakınlaş"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Gerçek şu ki, Biz onu kadir gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir gecesinin ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir gecesi, bin aydan daha hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve ruh, onda Rablerinin izniyle her bir iş için inerler"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "Fecrin çıkışına kadar bir esenliktir (selamdır) o"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap Ehlinden ve müşriklerden inkar edenler, kendilerine apaçık bir delil gelinceye kadar, (bulundukları durumdan) kopup-ayrılacak değillerdi"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "(O delil de) Allah'tan gönderilmiş-bir elçi (ki,) tertemiz sahifeleri okumaktadır"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "Onların içinde dosdoğru 'yazılı-hükümler' vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kitap Ehlinden olanlar, ancak kendilerine apaçık belgeler geldikten sonra fırkalara ayrıldılar"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Oysa onlar, dini yalnızca O'na halis kılan hanifler (Allah'ı birleyenler) olarak sadece Allah'a kulluk etmek, namazı dosdoğru kılmak ve zekatı vermekten başkasıyla emrolunmadılar. İşte en doğru (dimdik ve sapasağlam) din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Şüphesiz, Kitap Ehlinden ve müşriklerden inkar edenler, içinde sürekli kalıcılar olmak üzere cehennem ateşindedirler. İşte onlar, yaratılmışların en kötüleridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "İman edip salih amellerde bulunanlar ise; işte onlar da, yaratılmışların en hayırlılarıdır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Rableri Katında onların ödülleri, içinde ebedi kalıcılar olmak üzere altından ırmaklar akan Adn cennetleridir. Allah, onlardan razı olmuştur, kendileri de O'ndan razı (hoşnut, memnun) kalmışlardır. İşte bu, Rabbinden 'içi titreyerek korku duyan kimse' içindir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, o şiddetli sarsıntısıyla sarsıldığı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, ağırlıklarını dışa atıp-çıkardığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: \"Buna ne oluyor?\" dediği zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü senin Rabbin, ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, amelleri kendilerine gösterilsin diye, bölük bölük fırlayıp-çıkarlar"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre ağırlığınca hayır işlerse, onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Artık kim zerre ağırlığınca bir şer (kötülük) işlerse, onu görür"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Soluk soluğa koşan (at)lara andolsun"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Tırnaklarıyla) Ateş saçanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Derken, orada tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Bununla bir (düşman) topluluğun orta yerine kadar dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Gerçekten insan, Rabbine karşı nankördür"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Ve gerçekten, kendisi buna şahiddir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Muhakkak o, mal sevgisinden dolayı (bencil ve cimri tutumundan) çok katıdır"
        }
    ]
}