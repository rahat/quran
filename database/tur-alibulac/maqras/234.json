{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Surat astı ve yüz çevirdi"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine o kör geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nerden biliyorsun; belki o, temizlenip-arınacak"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya öğüt alacak; böylelikle bu öğüt kendisine yarar sağlayacak"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Fakat kendini müstağni gören (hiçbir şeye ihtiyacı olmadığını sanan) ise"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "İşte sen, onda 'yankı uyandırmaya’ çalışıyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa, onun temizlenip-arınmasından sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama koşarak sana gelen ise"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ki o, 'içi titreyerek korkar' bir durumdadır"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen ona aldırış etmeden oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır; çünkü o (Kur'an), bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen, onu 'düşünüp-öğüt alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O (Kur'an), 'şerefli-üstün' sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüceltilmiş, tertemiz (mutahhar) kılınmış"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Katiplerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "(Ki onlar,) Üstün değerli, 'iyilik ve dürüstlük sembolü"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan, ne kadar nankördür"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(Allah) Onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan yarattı da onu 'bir ölçüyle biçime soktu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü, böylece kabre gömdürdü"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır; ona (Allah'ın) emrettiğini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de insan, yediğine bir bakıversin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz şüphesiz, suyu akıttıkça akıttık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra yeri yardıkça yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Böylece onda taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler, hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Boyları birbiriyle yarışan ve içiçe girmiş ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklıklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Size ve hayvanlarınıza bir yarar (meta) olmak üzere"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Fakat 'kulakları patlatırcasına olan o gürleme' geldiği zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Kişi o gün, kendi kardeşinden kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve çocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün, onlardan her birisinin kendine yetecek bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün, öyle yüzler vardır ki apaydınlıktır"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güler ve sevinç içindedir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Ve o gün, öyle yüzler de vardır ki üzerini toz bürümüştür"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Bir karartı sarıp-kaplamıştır"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar da, kafir, facir olanlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş, köreltildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, bulanıklaşıp-döküldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar, yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer, kendi başına terk edildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi-hayvanlar, toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler, tutuşturulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler, birleştiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve 'diri diri toprağa gömülen kızcağıza' sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suçtan dolayı öldürüldü"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök, sıyrılıp-yüzüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem ateşi çılgınca kızıştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet de yakınlaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(Artık her) Nefis, neyi hazırladığını bilip-öğrenmiştir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Artık hayır; yemin ederim (gündüz) sinip (gece) dönen (gezegen)lere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Bir akış içinde yerini alanlara"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya ilk başladığı zaman, geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ve nefes almaya başladığı zaman, sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz o (Kur'an), üstün onur sahibi bir elçinin gerçekten (Allah'tan getirdiği) sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(Bu elçi,) Bir güç sahibidir, arşın sahibi Katında şereflidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Ona itaat edilir, sonra güvenilirdir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin sahibiniz bir deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o (peygamber), onu apaçık bir ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb (haberlerin)e karşı (söylediklerinden dolayı) suçlanamaz (ya da cimrilikte bulunup kıskançlık yapmaz)"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O (Kur'an) da kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Şu halde, siz nereye kaçıp-gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O (Kur'an), alemler için yalnızca bir zikirdir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dosdoğru bir yön (istikamet) tutturmak dileyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi olan Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}