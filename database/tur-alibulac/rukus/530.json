{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Her yanı yaygın olarak kuşatacak olan) Kıyametin haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün, öyle yüzler vardır ki, 'zillet içinde aşağılanmıştır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmış, boşuna yorulmuştur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir ateşe yollanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir kaynaktan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için (zehirli olan) dari' dikeninden başka bir yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne doyurup-semirtir, ne açlıktan korur"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün, öyle yüzler de vardır ki, nimette (engin bir mutluluk içinde)dirler"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Harcadığı-çabadan dolayı hoşnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orda anlamsız bir söz işitmez"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orda 'durmaksızın akan' bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orda 'yükseklerde kurulmuş, tahtlar da vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş (içecek dolu) kaplar"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizi dizi yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve serilmiş yaygılar"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı o deveye; nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe, nasıl yükseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara; nasıl oturtulup-kuruldu"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere; nasıl yayılıp-döşendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık sen, öğüt verip-hatırlat. Sen, yalnızca bir öğüt verici-bir hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlara 'zor ve baskı' kullanacak değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en büyük azap ile azaplandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphesiz onların dönüşleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları hesaba çekmek de elbette Bize aittir"
        }
    ]
}