{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "(ulaka muṭivukkākac) cūriyaṉiṉ pirakācam maṅka vaikkappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "naṭcattiraṅkaḷ utirntuviṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "malaikaḷ ataṉiṭaṅkaḷil iruntu akaṟṟappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "(inta amaḷikaḷāl pattumāta) karppamaṭainta oṭṭakaṅkaḷ (kavaṉippiṉṟi) viṭappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kāṭṭu mirukaṅkaḷ (payantu ūrkaḷil vantu) oṉṟukūṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kaṭal nīr neruppāka māṟṟappaṭumpōtu. (Ivvāṟu ulakam muṭivupeṟṟu, vicāraṇaik kālam ēṟpaṭum)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "appōtu uyirkaḷ uṭaluṭaṉ (mīṇṭum) cērkkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "appōtu (uyiruṭaṉ) putaikkappaṭṭa peṇ kuḻantaikaḷai nōkki kēṭkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "‘‘enta kuṟṟattiṟkāka nīṅkaḷ (uyiruṭaṉ putaikkappaṭṭuk) kolai ceyyappaṭṭīrkaḷ?'' Eṉṟu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "appōtu (vicāraṇaikkāka maṉitarkaḷuṭaiya) ēṭukaḷ virikkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "appōtu vāṉam (piḷantu) akaṟṟappaṭṭuviṭum"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "appōtu narakam erikkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "appōtu corkkam camīpamākak koṇṭu varappaṭum"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(annāḷil) ovvōr ātmāvum (naṉmaiyō tīmaiyō) tāṉ ceytu koṇṭu vantiruppatai naṉkaṟintu koḷḷum"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "(Maṉitarkaḷē!) Ceṉṟavaḻiyē mēlum cellum naṭcattiraṅkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "tōṉṟi maṟaiyum (vāl) naṭcattiraṅkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "celkiṉṟa iraviṉ mītum cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "utayamākum kālaiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "niccayamāka (tiru kur'āṉ eṉṉum) itu mikka kaṇṇiyamuḷḷa (jiprayīl eṉṉum) oru (vāṉavat) tūtar mūlam kūṟappaṭṭatākum"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "avar mikka palavāṉ. Avarukku arṣuṭaiyavaṉiṭattil perum pataviyuṇṭu"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(avar avviṭattiluḷḷa vāṉavarkaḷiṉ) talaivar; mikka nampikkaiyuṭaiyavar"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "(makkāvācikaḷē! Nam tūtarākiya) uṅkaḷ tōḻar paittiyakkāraralla"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "niccayamāka avar (jiprayīlai) teḷivāṉa vāṉattiṉ kōṭiyil meyyākavē kaṇṭār"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "(accamayam avar kaṇṭa) maṟaivāṉavaṟṟai (aṟivippatil) kañcattaṉam ceypavaralla"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "iṉṉum, itu veruṭṭappaṭṭa ṣaittāṉiṉ collumalla"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "ākavē, (itaiviṭṭu) nīṅkaḷ eṅku cellukiṟīrkaḷ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "itu ulakattār aṉaivarukkum oru nallupatēcamē tavira vēṟillai"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "uṅkaḷil evar nērāṉa pātaiyil cella virumpukiṟārō avarukku (itu payaṉaḷikkum)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "eṉiṉum, ulakattāriṉ iṟaivaṉākiya allāh nāṭiṉāl tavira, nīṅkaḷ (nalluṇarcci peṟa) virumpamāṭṭīrkaḷ"
        }
    ]
}