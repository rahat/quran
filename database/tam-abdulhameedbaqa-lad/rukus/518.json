{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "(napiyē!) Etaippaṟṟi avarkaḷ (taṅkaḷukkuḷ) kēṭṭuk koḷkiṉṟaṉar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "makattāṉa ceytiyaip paṟṟiya(llavā)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ataippaṟṟi avarkaḷ (uṇmaikku) muraṇāṉa apippirāyam koṇṭirukkiṉṟaṉar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "(Taṅkaḷ eṇṇam tavaṟu eṉpatai) aticīkkirattil avarkaḷ naṉku aṟintu koḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "piṉṉar, avaciyam aticīkkirattil (ataṉ uṇmaiyai) naṉku aṟintu koḷvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "(ivvaḷavu periya) pūmiyai nām (uṅkaḷukku) virippāka amaikka villaiyā"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "iṉṉum, (atil nām) malaikaḷai muḷaikaḷāka (niṟuttavillaiyā)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "jōṭi jōṭiyāka uṅkaḷai nāmē paṭaittirukkiṟōm"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "nāmē uṅkaḷ nittiraiyai (uṅkaḷukku) ōyvāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "nāmē iravai (uṅkaḷukku)p pōrvaiyāka ākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "nāmē pakalai (uṅkaḷ) vāḻvait tēṭikkoḷḷum nēramākkiṉōm"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "uṅkaḷukku mēlirukkum palamāṉa ēḻu vāṉaṅkaḷaiyum nāmē amaittōm"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "atil (cūriyaṉaip) pirakācikkum tīpamāka amaittōm"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "kārmēkattiliruntu perum maḻaiyai poḻiyac ceykiṟōm"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ataik koṇṭu tāṉiyaṅkaḷaiyum puṟpūṇṭukaḷaiyum muḷaippikkiṟōm"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "iṉṉum, kiḷaikaḷ aṭarnta cōlaikaḷaiyum (uṟpatti ceykiṟōm)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "niccayamāka (ivarkaḷ tarkkittu nirākarittuk koṇṭirukkum) antat tīrppu nāḷtāṉ (vicāraṇaikkuk) kuṟippiṭṭa kālamākum"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "(ataṟkāka) sūr (eṉṉum ekkāḷam) ūtappaṭum nāḷil nīṅkaḷ kūṭṭam kūṭṭamāka varuvīrkaḷ"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "vāṉam tiṟakkappaṭṭu (atil) pala vaḻikaḷ ēṟpaṭṭu viṭum"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "malaikaḷ (tam iṭattiliruntu) peyarkkappaṭṭu tūḷtūḷāki (paṟantu) viṭum"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "niccayamāka narakam (intap pāvikaḷiṉ varavai) etirpārttuk koṇṭirukkiṟatu"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "(pāvikaḷākiya) inta aniyāyakkārarkaḷ taṅkumiṭam atuvē"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "atil avarkaḷ nīṇṭa kālaṅkaḷ taṅkiviṭuvārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "atil kotikkum nīraiyum cīḻ calattaiyum tavira avarkaḷ (vēṟu oru) kuṭipāṉattaiyum, kuḷircciyaiyum cuvaikka māṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Atil kotikkum nīraiyum cīḻ calattaiyum tavira avarkaḷ (vēṟu oru) kuṭipāṉattaiyum, kuḷircciyaiyum cuvaikka māṭṭārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "itu (avarkaḷ ceyalukkut) takumāṉa kūliyākum"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "ēṉeṉṟāl, niccayamāka avarkaḷ (maṟumaiyiṉ) kēḷvi kaṇakkai nampavē illai"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "avarkaḷ nam vacaṉaṅkaḷai mika alaṭciyamākap poyppittārkaḷ"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "eṉiṉum, ivai aṉaittaiyum nām (nam kuṟippup) puttakattil pativu ceytu koṇṭōm"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "ākavē, (maṟumaiyil avarkaḷai nōkki) ‘‘vētaṉaiyait tavira nām uṅkaḷukku (vēṟetaiyum) atikappaṭutta māṭṭōm. Ākavē, (itaic) cuvaittup pāruṅkaḷ'' (eṉṟu kūṟuvōm)"
        }
    ]
}