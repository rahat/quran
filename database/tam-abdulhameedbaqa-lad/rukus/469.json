{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "(yukamuṭivu eṉṉum) māperum campavam nikaḻntāl"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "atai(t taṭai ceytu) poyyākkuvataṟku oṉṟumillai"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "atu (palariṉ patavikaḷait) tāḻttiviṭum. (Palariṉ patavikaḷai) uyarttiviṭum"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "(accamayam) mikka palamāṉa pūkampam ēṟpaṭṭu"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "malaikaḷ (peyarntu oṉṟōṭoṉṟu mōti) tūḷ tūḷākap paṟantu viṭum"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Avai (ākāyattil) tūcikaḷākap paṟantuviṭum"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "(annāḷil) nīṅkaḷ mūṉṟu pirivukaḷākap pirintu viṭuvīrkaḷ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "(mutalāvatu:) Valappakkattiluḷḷavarkaḷ. Valappakkattiluḷḷa (i)varkaḷ yār? (Eṉpatai aṟivīrkaḷā? Avarkaḷ mika pākkiyavāṉkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "(iraṇṭāvatu:) Iṭappakkattiluḷḷavarkaḷ. Iṭappakkattiluḷḷa (i)varkaḷ yār? (Eṉpatai aṟivīrkaḷā? Ivarkaḷ mikka turatirṣṭacālikaḷ)"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(mūṉṟāvatu:) Muṉceṉṟu viṭṭavarkaḷ. (Ivarkaḷ naṉmaiyāṉa kāriyaṅkaḷil maṟṟa aṉaivaraiyumviṭa) muṉceṉṟu viṭṭavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "ivarkaḷ taṅkaḷ (iṟaivaṉukku) mikka neruṅkiyavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "ivarkaḷ iṉpam tarum corkkaṅkaḷil iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(ivarkaḷuṭaṉ) mutalāvatu vakuppāril oru peruṅkūṭṭattiṉarum"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "piṉṉuḷḷōril oru coṟpa tokaiyiṉarum iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "poṉ vēlaippāṭuḷḷa uṉṉata kaṭṭilkaḷ mītu"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "oruvarai oruvar mukam nōkki(p pañcaṇaiyiṉ mītu) cāyntavarkaḷāka iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "eṉṟeṉṟumē kuḻantaikaḷāka irukkakkūṭiya ciṟuvarkaḷ (paṇi ceyya ennēramum) ivarkaḷaic cuṟṟik koṇṭē iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "iṉpamāṉa kuṭipāṉam niṟainta kuvaḷaikaḷaiyum, keṇṭikaḷaiyum, kiṇṇaṅkaḷaiyum tūkkikkoṇṭu (avarkaḷaic cuṟṟikkoṇṭē iruppārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(akkuṭipāṉaṅkaḷāl) ivarkaḷukkut talaivaliyum ēṟpaṭātu; avarkaḷuṭaiya puttiyum māṟātu"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "ivarkaḷ piriyappaṭṭa kaṉivarkkaṅkaḷaiyum"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "virumpiya paṭcikaḷiṉ māmicattaiyum (kaikaḷil ēnti cuṟṟi varuvārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "(aṅku ivarkaḷukku) ‘hūrul īṉ' (eṉṉum kaṇṇaḻakikaḷāṉa maṉaivi)kaḷum iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "avarkaḷ pēṇip pātukākkappaṭum muttukkaḷaip pōl iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "ivai aṉaittum ivarkaḷ ceyta naṉmaikaḷukkuk kūliyākak kiṭaikkum"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Aṅku ivarkaḷ oḻuṅkīṉamāṉa vārttaikaḷaiyum, vīṇāṉa pēccukkaḷaiyum ceviyuṟa māṭṭārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "āyiṉum, salām! Salām! (Cāntiyum, camātāṉamum) eṉṟa captattaiyē ceviyuṟuvārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "valappakkattil uḷḷavarkaḷiṉ pākkiyamtāṉ eṉṉa! Valappakkattil irukkum avarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "muḷḷillāta ilantai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "(nuṉi mutal) aṭi varai kulai kulaikaḷākat toṅkum (pūvillā) vāḻai marattiṉ kīḻum"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "aṭi cāyāta niḻalilum iruppārkaḷ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "aṅku(toṭarntu) nīraik koṭṭik koṇṭirukkum ūṟṟukkaḷum"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "ērāḷamāṉa kaṉivarkkaṅkaḷum uṇṭu"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "ataṉ kaṉikaḷ (pucikka) taṭukkappaṭātu, (paṟippatāl) kuṟaivuṟātu"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "(oṉṟaip paṟittāl, maṟṟoṉṟu atē iṭattil kāṇappaṭum.) Uyarnta mēlāṉa virippukaḷil (amarntiruppārkaḷ)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "(avarkaḷuṭaṉ, kaṇṇaḻakikaḷākiya hūrul īṉ eṉṉum kaṉṉiyarkaḷum iruppārkaḷ. Avarkaḷ oruvarālum peṟṟeṭukkappaṭṭavarkaḷ allar.) Niccayamāka nām avarkaḷaic (contamāka ivarkaḷukkeṉap putitākavē) paṭaittirukkiṟōm"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "kaṉṉiyarkaḷāka avarkaḷaip paṭaittirukkiṟōm"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "avarkaḷ taṉ kaṇavaṉaiyē kātalikkum cama vayatuṭaiyavarkaḷ"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "(muṉṉar varṇikkappaṭṭa ivai) valatu pakkattiluḷḷavarkaḷukkuk kiṭaikkum"
        }
    ]
}