{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(nam napi) kaṭukaṭuttār; puṟakkaṇittār. (Etaṟkāka)"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "taṉṉiṭam ōr pārvaiyaṟṟavar vantataṟkāka"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "(napiyē! Um'miṭam vanta) avar paricuttavāṉāka irukkalām eṉpatai nīr aṟivīrā"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "allatu avar nalluṇarvu peṟuvār. (Umatu) nallupatēcam avarukkup payaṉaḷikkalām (eṉpatai nīr aṟivīrā? Avvāṟirukka, avarai nīr ēṉ kaṭukaṭuttup puṟakkaṇittīr)"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "(napiyē! Mārkkattai) evaṉ alaṭciyam ceykiṟāṉō"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "avaṉai varavēṟpatil nīr atika ciramattai eṭuttuk koḷkiṟīr"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "avaṉ paricuttavāṉāka ākāviṭṭāl ataip paṟṟi um mītu oru kuṟṟamum illai(yē)"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "evar (tāṉākavē) um'miṭam ōṭi varukiṟārō"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "avartāṉ (allāhvukkup) payappaṭukiṟavar"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "eṉiṉum, nīr avarai alaṭciyam ceytu viṭukiṟīr"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Avvāṟu ceyyātīr. (Tiru kur'āṉākiya) itu oru nallupatēcamtāṉ"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "evar (nērāṉa vaḻiyil cella) virumpukiṟārō avar itai(c ceviyuṟṟu) ñāpakattil vaittuk koḷvār"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "itu (lavhul mahḥpūḷ eṉṉum) mikka kaṇṇiyamāṉa puttakattil (varaiyappaṭṭuḷḷatu)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "uyarvumikka tūymaiyāṉa iṭattil vaikkappaṭṭuḷḷatu; (atu) mikap paricuttamāṉatu"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "eḻutupavarkaḷiṉ kaikaḷiṉāl (varaiyappaṭṭatu)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "(avarkaḷ) mika kaṇṇiyamāṉavarkaḷ, mika nallavarkaḷ"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "(pāvam ceyyum) maṉitaṉukkuk kēṭutāṉ. Avaṉ evvaḷavu naṉṟikeṭṭavaṉāka irukkiṟāṉ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "etaikkoṇṭu (iṟaivaṉ) avaṉaip paṭaittirukkiṟāṉ (eṉpatai avaṉ kavaṉittāṉā)"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "oru tuḷi intiriyattaik koṇṭutāṉ avaṉ avaṉaip paṭaikkiṟāṉ. (Avaṉ irukkiṉṟa ivvāṟē, avaṉai maṉitaṉāka amaittu) avaṉukkuc caktiyaik koṭuttāṉ"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "piṉṉar, avaṉ ceyyakkūṭiya (naṉmai tīmaikkuriya) vaḻiyai avaṉukku eḷitākki vaittāṉ"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "piṉṉar, avaṉai maraṇikkac ceytu camātiyil pukuttukiṟāṉ"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "piṉṉar (avaṉ virumpiyapoḻutu uyir koṭuttu) avaṉē avaṉai uyirppippāṉ"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "eṉiṉum, niccayamāka maṉitaṉ iṟaivaṉuṭaiya kaṭṭaḷaiyai niṟaivēṟṟuvatillai"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "maṉitaṉ taṉ uṇavai (atu eṅkiruntu evvāṟu varukiṟatu eṉpataic) ciṟitu kavaṉittup pārkkavum"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "niccayamāka nāmē ērāḷamāṉa maḻaiyai poḻiyac ceytōm"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "piṉṉar, pūmiyaiyum piḷan(tu veṭikkac cey)tōm"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "piṉṉar, atiliruntu vittukkaḷai muḷaittu vaḷarumpaṭi ceykiṟōm"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "(ivvāṟu) tirāṭcaik kaṉikaḷaiyum maṟṟa kāykaṟikaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "jaittūṉaiyum, pērīccai marattaiyum"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "kiḷaikaḷ aṭarnta tōppukaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "kaṉivarkkaṅkaḷaiyum, puṟpūṇṭukaḷaiyum"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "uṅkaḷukkum uṅkaḷ kālnaṭaikaḷukkum, payaṉaḷikkumāṟu (muḷaikka vaikkiṟōm)"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "(Ulaka muṭiviṉpoḻutu cevikaḷai) ceviṭākkumpaṭiyāṉa (payaṅkarac) captam ēṟpaṭumāyiṉ"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "annāḷil maṉitaṉ taṉ cakōtaraṉai viṭṭum veruṇṭōṭuvāṉ"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "taṉ tāyai viṭṭum, taṉ tantaiyai viṭṭum"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "taṉ maṉaiviyai viṭṭum, taṉ piḷḷaikaḷai viṭṭum (ōṭuvāṉ)"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "annāḷil, avarkaḷil ovvoru maṉitaṉukkum, maṟṟavarkaḷaik kavaṉikka muṭiyātavāṟu contak kavalai ēṟpaṭṭuviṭum"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "eṉiṉum, annāḷil cila mukaṅkaḷ pirakācamuḷḷavaiyākavum"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "cantōṣattāl cirittavaiyākavum irukkum"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "annāḷil vēṟu cila mukaṅkaḷ mītu, puḻuti paṭintu kiṭakkum"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "karumai iruḷ avaṟṟai mūṭikkoḷḷum, (tukkattāl avarkaḷatu mukaṅkaḷ iruḷaṭaintu kiṭakkum)"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "ivarkaḷtāṉ (maṟumaiyai) nirākarittup pāvam ceypavarkaḷ"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "(ulaka muṭivukkākac) cūriyaṉiṉ pirakācam maṅka vaikkappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "naṭcattiraṅkaḷ utirntuviṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "malaikaḷ ataṉiṭaṅkaḷil iruntu akaṟṟappaṭum pōtu"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "(inta amaḷikaḷāl pattumāta) karppamaṭainta oṭṭakaṅkaḷ (kavaṉippiṉṟi) viṭappaṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kāṭṭu mirukaṅkaḷ (payantu ūrkaḷil vantu) oṉṟukūṭumpōtu"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kaṭal nīr neruppāka māṟṟappaṭumpōtu. (Ivvāṟu ulakam muṭivupeṟṟu, vicāraṇaik kālam ēṟpaṭum)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "appōtu uyirkaḷ uṭaluṭaṉ (mīṇṭum) cērkkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "appōtu (uyiruṭaṉ) putaikkappaṭṭa peṇ kuḻantaikaḷai nōkki kēṭkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "‘‘enta kuṟṟattiṟkāka nīṅkaḷ (uyiruṭaṉ putaikkappaṭṭuk) kolai ceyyappaṭṭīrkaḷ?'' Eṉṟu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "appōtu (vicāraṇaikkāka maṉitarkaḷuṭaiya) ēṭukaḷ virikkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "appōtu vāṉam (piḷantu) akaṟṟappaṭṭuviṭum"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "appōtu narakam erikkappaṭum"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "appōtu corkkam camīpamākak koṇṭu varappaṭum"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(annāḷil) ovvōr ātmāvum (naṉmaiyō tīmaiyō) tāṉ ceytu koṇṭu vantiruppatai naṉkaṟintu koḷḷum"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "(Maṉitarkaḷē!) Ceṉṟavaḻiyē mēlum cellum naṭcattiraṅkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "tōṉṟi maṟaiyum (vāl) naṭcattiraṅkaḷ mītu cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "celkiṉṟa iraviṉ mītum cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "utayamākum kālaiyiṉ mītum cattiyamāka"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "niccayamāka (tiru kur'āṉ eṉṉum) itu mikka kaṇṇiyamuḷḷa (jiprayīl eṉṉum) oru (vāṉavat) tūtar mūlam kūṟappaṭṭatākum"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "avar mikka palavāṉ. Avarukku arṣuṭaiyavaṉiṭattil perum pataviyuṇṭu"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(avar avviṭattiluḷḷa vāṉavarkaḷiṉ) talaivar; mikka nampikkaiyuṭaiyavar"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "(makkāvācikaḷē! Nam tūtarākiya) uṅkaḷ tōḻar paittiyakkāraralla"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "niccayamāka avar (jiprayīlai) teḷivāṉa vāṉattiṉ kōṭiyil meyyākavē kaṇṭār"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "(accamayam avar kaṇṭa) maṟaivāṉavaṟṟai (aṟivippatil) kañcattaṉam ceypavaralla"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "iṉṉum, itu veruṭṭappaṭṭa ṣaittāṉiṉ collumalla"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "ākavē, (itaiviṭṭu) nīṅkaḷ eṅku cellukiṟīrkaḷ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "itu ulakattār aṉaivarukkum oru nallupatēcamē tavira vēṟillai"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "uṅkaḷil evar nērāṉa pātaiyil cella virumpukiṟārō avarukku (itu payaṉaḷikkum)"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "eṉiṉum, ulakattāriṉ iṟaivaṉākiya allāh nāṭiṉāl tavira, nīṅkaḷ (nalluṇarcci peṟa) virumpamāṭṭīrkaḷ"
        }
    ]
}