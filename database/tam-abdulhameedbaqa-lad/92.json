{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "(aṉaittaiyum) mūṭikkoḷḷum (iruṇṭa) iraviṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "pirakācamuḷḷa pakaliṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "āṇaiyum peṇṇaiyum paṭaittavaṉ mītu cattiyamāka"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "(maṉitarkaḷē!) Niccayamāka uṅkaḷ muyaṟcikaḷ palavāṟāka irukkiṉṟaṉa"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "ākavē, (uṅkaḷil) evar tāṉam ceytu (allāhvukkup) payantu"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "(inta mārkkattiluḷḷa) nalla kāriyaṅkaḷaiyum (nallateṉṟē) uṇmaiyākki vaikkiṟārō"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "avarukku corkkap pātaiyai nām eḷitākkit taruvōm"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "evaṉ kañcattaṉam ceytu (allāhvaiyum) poruṭpaṭuttātu"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "(im'mārkkattiluḷḷa) nalla kāriyaṅkaḷaiyum poyyākki vaikkiṟāṉō"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Avaṉukkuk (kaṣṭattiṟkuriya) narakap pātaiyaittāṉ nām eḷitākki vaippōm"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "avaṉ (narakattil) viḻuntuviṭṭāl, avaṉuṭaiya poruḷ avaṉukku (oru) payaṉumaḷikkātu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "niccayamāka nērvaḻiyai aṟivippatu nam'mītutāṉ kaṭamaiyākum"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "niccayamāka im'maiyum, maṟumaiyum namakkē contamāṉavai"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "(makkāvācikaḷē!) Koḻuntu viṭṭeriyum neruppaip paṟṟi nāṉ uṅkaḷukku accamūṭṭi eccarikkai ceykiṟēṉ"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "mikka turpākkiyam uṭaiyavaṉait tavira, (maṟṟevaṉum) ataṟkuḷ cellamāṭṭāṉ"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "avaṉ (nam vacaṉaṅkaḷaip) poyyākkip puṟakkaṇittuviṭuvāṉ"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "iṟaiyaccamuṭaiyavartāṉ atiliruntu tappittukkoḷvār"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "avar (pāvattiliruntu taṉṉaip) paricuttamākkik koḷvataṟkāka taṉ poruḷai(t tāṉamāka)k koṭuppār"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "tāṉ patil naṉmai ceyyakkūṭiyavāṟu evaruṭaiya naṉṟiyum taṉ mītu irukkātu"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "iruppiṉum, mikka mēlāṉa taṉ iṟaivaṉiṉ tirumukattai virumpiyē tavira (vēṟu etaṟkākavum tāṉam ceyya māṭṭār)"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "(iṟaivaṉ avarukku aḷikkum koṭaiyaip paṟṟip) piṉṉar avarum tiruptiyaṭaivār"
        }
    ]
}