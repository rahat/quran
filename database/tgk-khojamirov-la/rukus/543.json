{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Qori'ah, ruzest, ki dilho az havli on kuʙida mesavand"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Cist qori'ah"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Va tu ci doni, ki qori'ah cist"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Ruzest, ki mardumon hamcun parvonahoi parokanda xohand ʙud"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Va kuhho monandi pasmi zadasuda ʙo halloci pareson karda suda xohand sud"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Ammo har kasero pallai nekihoi tarozujas vaznin ʙosad"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "pas u dar cannat dar zindagii pisandida ʙosad"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Va ammo har kasero saʙuk sud pallai nekihoi tarozujas"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "cojgohas dar hovijah ast"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Va tu ci doni, ki hovijah cist"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Otasi ʙuzurg va ʙisjor garmu suzonest"
        }
    ]
}