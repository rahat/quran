{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Az cī ciz (hamdigarro) mepursand"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Az on xaʙari ʙuzurg, (qijomat)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ki dar on ixtilof mekunand"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ore, ʙa zudī xohad donist"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Boz ham, ore, ʙa zudī xohand donist"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Ojo Mo zaminrro ʙistare nasoxtem"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Va kūhhoro mexhoe"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Va şumoro çuft-çuft ofaridem"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Va xoʙatonro ossişaton gardonidem"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Va şaʙro pūşişaton qaror dodem"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Va rūzro vaqti talaʙi ma'işat. (kasʙ)"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Va ʙar ʙoloi saraton haft osmoni ustuvor ʙino kardem"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Va caroƣe ravşan ofaridem. (oftoʙ)"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Az aʙrhoi ʙoronzoj oʙe farovon nozil kardem"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "to ʙo on donavu naʙot ʙirūjonem"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "va ʙūstonhoi anʙūh (serdaraxt)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Alʙatta rūzi dovarī rūzest mu'ajjan"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Rūze, ki dar sur damida şavad, va şumo gurūhgurūh ʙijoed"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Osmon şikofta şavad va har şikof dare ʙoşad"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Va kuhho ravon şavand va saroʙ gardand"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Çahannam dar intizor ʙoşad"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Sarkaşonro ʙozgaştangohest"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Zamone daroz dar on ço ʙoşand"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Na xunukī caşandu na oʙ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "faqat oʙi çūşonu xunu cirk. (nūşand)"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "In çazoest muvofiqi kirdor"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Zero onon ʙa rūzi hisoʙ umed nadoştand"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Va ojoti Moro ʙa saxtī durūƣ meʙarovardand"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Va Mo hama cizro dar, kitoʙe şumora kardaem"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Pas ʙicaşed, ki faqat ʙar azoʙi şumo xohem afzud"
        }
    ]
}