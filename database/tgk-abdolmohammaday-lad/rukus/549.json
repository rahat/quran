{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Ojo onro, ki rūzi çazoro durūƣ meşumurad, didī"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Ū hamon kasest, ki jatimro ʙa ihonat (xorī) meronad"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "va mardumro ʙa ta'om dodan ʙa ʙenavo tarƣiʙ namekunad"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Pas voj ʙar on namozguzorone"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "ki dar namozi xud sahl angorand (dar ƣaflatand)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "onon, ki rijo mekunand"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "va az dodani zakot sarkaşī mekunand"
        }
    ]
}