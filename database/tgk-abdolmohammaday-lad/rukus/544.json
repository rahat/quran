{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Ba ƣaflat kaşid şumoro faxr kardan ʙa ʙisjorii molu farzand"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "to ʙa gūrho rasided"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Haqqo, ki ʙa zudī xohed donist"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Boz ham haqqo, ki ʙa zudī xohed donist"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Haqqo agar az rūi jaqin ʙidoned"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "alʙatta, çahannamro xohed did"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sipas ʙa caşmi jaqinaş xohed did"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "sipas dar on rūz şumoro az ne'mathoi dunjavī ʙozxost mekunand"
        }
    ]
}