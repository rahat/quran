{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Ore, savgand ʙa moh"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Va savgand ʙa şaʙ, cun rūj ʙa raftan orad"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "va savgand ʙa suʙh cun parda ʙarafkanad"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "ki in jake az hodisahoi ʙuzurg ast"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Tarsonandai odamijon ast"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Baroi har kas az şumo, ki xohad, peş ojad (ʙo amali nek) jo az paj ravad (ʙo kufru nofarmonī)"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Har kas garavgoni korest, ki kardaast"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "ƣajri ahli sa'odat"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "ki dar ʙihiştho nişastaand va mepursand"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "az gunohkoron"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "ki cī ciz şumoro ʙa çahannam kaşonid"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Megūjand: «Mo az namozguzoron naʙudem"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "va ʙa darveşon ta'om namedodem"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "va ʙo onon, ki suxani ʙotil meguftand, hamovoz meşudem"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "va rūzi qijomatro durūƣ meşumoridem"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "to margi mo faro rasid»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Pas şafo'ati şafo'atkunandagon foidaaşon naʙaxşad"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Cī şudaast, ki az in pand rūj megardonand"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Monandi xaroni ramida"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ki az şer megurezand"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "ʙalki har jak az onho mexohad, ki nomahoe ku şoda ʙa ū doda şavad"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Ore, ki az oxirat nametarsand"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Ore, ki in Qur'on pandest"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "har ki xohad onro ʙixonad"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Va pand namegirand, ʙe on ki Xudo xohad. Ū şojoni on ast, ki az Ū ʙitarsand. Va ū şojoni ʙaxşoidan ast"
        }
    ]
}