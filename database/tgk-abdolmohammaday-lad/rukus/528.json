{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Savgand ʙa osmonu ʙa on cī dar şaʙ ojad"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Va tu cī donī, ki on cī dar şaʙ ojad, cist"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Sitoraest duraxşanda"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Heç kas nest, kī ʙar ū nigahʙone naʙoşad"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Pas odamī ʙingarad, ki az cī ciz ofarişa şudaast"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Az oʙe çahanda ofarida şudaast"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "ki az mijoni puştu sina ʙerun meojad"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Xudo ʙa ʙozgardonidani ū tavonost"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "rūze, ki rozho (sirho) oşkor meşavand"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Ūro na quvvatest, va na jovare"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Qasam ʙa osmoni ʙozʙoranda"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Qasam ʙa zamini rujoni şikofxūrda, (ʙaroi gijoh)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ki in kitoʙ haqro az ʙotil çudo kunad"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "va suxani hazl nest"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onon hilae meandeşand"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "va Man ham hilae meandeşam"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Pas kofironro mūhlat deh andak mūhlataşon deh"
        }
    ]
}