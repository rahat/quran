{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Le fracas"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Qu'est-ce que le fracas"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Et qui te dira ce qu'est le fracas"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "C'est le jour où les gens seront comme des papillons éparpillés"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "et les montagnes comme de la laine cardée"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "quant à celui dont la balance sera lourde"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "il sera dans une vie agréable"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "et quant à celui dont la balance sera légère"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "sa mère [destination] est un abîme très profond"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Et qui te dira ce que c'est"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "C'est un Feu ardent"
        }
    ]
}