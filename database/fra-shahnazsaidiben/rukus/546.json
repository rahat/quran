{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Malheur à tout calomniateur médisant"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "qui amasse les richesses et les passe continuellement en revue"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "escomptant que sa fortune l’immortalisera"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Que non ! Il sera certes livré à la Houtama (La Broyeuse)"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Comment pourrais-tu concevoir la Houtama"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "C’est le feu de Dieu, perpétuellement alimenté"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "qui dévore jusqu’aux"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "cœurs, qui les emprisonnera"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "en formant des colonnes (de flammes) élevées"
        }
    ]
}