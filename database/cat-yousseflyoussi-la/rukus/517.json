    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Els temorosos (d'Al·la) estaran a l'ombra i entre fonts"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "i tindran la fruita que desitgin"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "«Mengeu i beveu en pau el fruit de les vostres obres!»"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Aixi retribuim a qui fan el be"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "«Mengeu i gaudiu encara un poc!, Sou uns pecadors!»"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Quan se'ls diu: «Inclineu-vos!», no s'inclinen"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "En quin anunci, despres d'aquest, van a creure"
        }
