{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Va frunzir les celles i va tornar l'esquena"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "perque el cec vi a ell"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Qui sap? Potser volia purificar-se"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "o deixar-se amonestar i que l'amonestacio li aprofites"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "A qui es ric"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "li dispenses una bona acollida"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "i et te sense cura que no vulgui purificar-se"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "En canvi, de qui ve a tu, corrent"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "tement(Al·la)"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "et despreocupes"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "No! Es un Record"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "que recordara qui vulgui"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "contingut en fulles venerades"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "sublims, purificades"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "escrit per ma d'escribes"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "nobles, piadosos"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Maleit sigui l'home! Quin desagrait es"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "De quin ho ha creat Ell"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "D'una gota ho ha creat i determinat"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "despres, li ha facilitat el cami"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "despres, li ha fet morir i ser sepultat"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "despres, quan Ell vulgui, li ressuscitara"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "No! No ha complert encara el que Ell li ha ordenat"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Que miri l'home el seu aliment"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Nosaltres hem vessat l'aigua en abundancia"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "i seguidament fenem la terra en solcs"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "i fet creixer en ella gra"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "vinyes, hortalisses"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "oliveres, palmeres"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "frondosos jardins"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "fruites, pastures"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "per a gaudi vostre i dels vostres ramats"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "I quan arribi l´Estrepit"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "el dia que l'home fugi del seu germa"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "de la seva mare i del seu pare"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "de la seva companya i dels seus fills"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "aquest dia, cadascu tindra bastant amb si mateix"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Aquest dia, uns rostres estaran radiants"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "riallers, alegres"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "mentre que uns altres, aquest dia, tindran pols damunt"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "els cobrira una negror"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "aquests seran els infidels, els pecadors"
        }
    ]
}