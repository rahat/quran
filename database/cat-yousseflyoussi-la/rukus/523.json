{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Quan el sol sigui enfosquit"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "quan les estrelles perdin la seva lluentor"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "quan les muntanyes siguin engegades"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "quan les camelles prenyades de deu mesos siguin descurades"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "quan les besties salvatges siguin agrupades"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "quan els mars siguin inflats"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "quan les animes siguin apariades"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "quan es pregunti a la nena enterrada viva"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "quin crim va cometre perque la matessin"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "quan les fulles siguin desplegades"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "quan el cel sigui escorxat"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "quan el Jaheem sigui avivat"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "quan el Paradis sigui acostat"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "cadascu sabra el que presenta"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Doncs no! Juro pels planetes"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "que passen i desapareixen"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "A la nit quan s'esten"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Al mati quan respira"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Si, es la paraula d'un Missatger noble"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "que disposa de poder al costat del Senyor del Tron, ferm"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "obeit alla i digne de confianca"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "El vostre paisa no es un posses"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Li ha vist en el clar horitzo"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "no es avar de l'ocult"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "No es la paraula d'un dimoni maleit"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "On anireu, doncs"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "No es sino una amonestacio dirigida a tot el mon"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "per a aquells de vosaltres que vulguin seguir la via recta"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Pero vosaltres no ho voldreu, tret que vulgui AlÂ·la, Senyor de l'univers"
        }
    ]
}