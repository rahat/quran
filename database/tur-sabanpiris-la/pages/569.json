    "pages": [
        {
            "chapter": 70,
            "verse": 11,
            "text": "Onlar birbirlerine gosterilirler. Suclular o gunun azabından kurtulmak icin ogullarını fidye olarak vermek ister"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "Esini ve kardesini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "Kendisini barındıran sulalesini"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "Ve yeryuzunde bulunan herkesi... Sonra kendisini kurtarabilsin"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Asla, suphesiz O, alev almıstır"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Deriyi yakıp kavurur"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Cagırır arkasını donup, yuz cevireni"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "Malını toplayıp yıganı"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Insan ac gozlu yaratılmıstır"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Basına bir kotuluk gelince umutsuzluga duser"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Bir iyilik dokununca da cok cimridir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Namaz kılanlar boyle degildir"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Onlar, namazlarında/salatlarında daimidirler"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "Onların mallarında belli bir hak vardır"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "Isteyene ve mahrum olana"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "Onlar hesap gununu tasdik ederler"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rab’lerinin azabından cekinirler"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Gercekten Rab’lerinin azabından guvende olunamaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "Onlar, mahrem yerlerini koruyan kimselerdir"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Esleri veya mesru sekilde sahip oldukları haric. Cunku onlar, bu hususta kınanmazlar"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Bundan otesini arayanlar, iste onlar haddi asmıs olanlardır"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Onlar, emanetlerine ve sozlerine riayet ederler"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Onlar, sahitliklerini dogru olarak yerine getirirler"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Onlar, namazlarını muhafaza ederler"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "Onlar, cennetlerde ikram olunurlar"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "Kafir olanlara ne oluyor ki; sagdan soldan, boluk porcuk uzaklasıyorlar"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "Kafir olanlara ne oluyor ki; sagdan soldan, boluk porcuk uzaklasıyorlar"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "Yoksa onların her biri nimet cennetlerine mi girdirilecegini umit ediyor"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "Asla! Biz onları bildikleri seyden yarattık"
        }
    ]
