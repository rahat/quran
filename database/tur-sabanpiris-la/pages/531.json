{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "Emrimiz goz acıp kapaması gibidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Andolsun ki benzerlerinizi helak ettik. Ibret alan var mı"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Onların yaptıkları her sey kayıtlardadır"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Buyuk, kucuk... satır, satır"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Korunanlar ise cennetlerde ve ırmaklarda"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Dogruluk makamında, tum gucu elinde bulunduran bir hukumdarın yanındadırlar"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur’anı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes ve ay bir hesaba baglıdır"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler, agaclar da boyun egerler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "(Allah) Gogu yukseltip, ona da bir olcu koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "O halde, olcude egrilik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Dogru tartın, eksik tartmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Yeryuzunu yarattıkları icin alcalttı. Boyun egdirdi"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyveler, salkım salkım hurmalar"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yapraklı taneler ve hos kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Oyleyse Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı iyice pismis gibi kuru balcıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de yalın bir alevden yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "O halde Rabbinizin hangi nimetini yalanlayabilirsiniz"
        }
    ]
}