    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar/gezegenler dagılıp, parcalandıgı"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler tasırıldıgı"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına cıkarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Kisi ne hazırlamıs oldugunu ne ertelemis oldugunu bilecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni yaratan ve seni duzenleyip, sana bicim veren, cok comert ve bagıslayıcı Rabbine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Ey insan, seni yaratan ve seni duzenleyip, sana bicim veren, cok comert ve bagıslayıcı Rabbine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "O, seni diledigi surette tertip etti"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, aksine dini/hesabı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa uzerinizde kaydediciler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Serefli yazıcılar/Kiramen katibin"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ne yaptıgınızı biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler, elbette nimetler icinde olacaktır"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler/gunahkarlar ise kesinlikle cehennemdedir"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gunu oraya atılacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar, oradan kaybolacak degillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sana bildiren nedir? Din gununun ne oldugunu"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Yine, Din gununun ne oldugunu Sana bildiren nedir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Hic kimsenin, hic kimseye sahip olamayacagı bir gundur. O gun, emir sadece, Allah’ındır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Olcude hile yapanların vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Insanlardan/halktan aldıklarında tam alan"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Onlara tartıp olctuklerinde eksik verenler"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, yeniden dirileceklerini dusunmuyor/sanmıyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gunde"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gun insanlar, alemlerin Rabbi icin ayaga kalkar"
        }
    ]
