{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Andolsun kıyamet gunune"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Andolsun kendini kınayan nefse"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Insan, kemiklerini bir araya getiremeyecegimizi mi sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, onun parmak uclarını bile duzenlemeye gucumuz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Oysa, insan onundekini yalanlamak ister de"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Kıyamet gunu ne zaman? diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Goz kamastıgı zaman"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ay tutuldugu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Gunes ve Ay bir araya getirildigi zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "(O gun) insan: -Bugun kacacak yer nerede? der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, asla kacacak bir yer yoktur"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun, karar yeri Rabbinin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun insana yaptıkları ve erteledikleri haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Evet, insan kendini gorecektir"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Isterse ozur beyan etsin"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Dilini acele ile hareket ettirip durma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Suphesiz, onu toplayıp, okumak bize duser"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Onu okudugumuz zaman onun okunusuna tabi ol"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra onu acıklamak yine bize aittir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, siz, acil olanı /dunyayı seviyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ahireti bırakıyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gun, parıldayan yuzler olacak"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabbine bakacak"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "O gun asık yuzler de olacak"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Bellerini bukecek bir felakete ugrayacagını anlayacak"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Hayır, can cıkma noktasına/koprucuk kemigine gelmis"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Son nefesini veren kimdir? denmis"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Anlar ki, bu bir ayrılıs"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacaklarından can cekilmis"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gun sevk, Rabbine´dir"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemis, namaz kılmamıs"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat, yalanlamıs, yuz cevirmis"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da calım satarak ailesine gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Belanı buldun, belanı"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra sen buna layıksın"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan kendisini bası bos bırakacagımızı mı sanar"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, atılan spermden bir damla degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra “alaka” olmus, Allah, onu yaratmıs ve duzenlemisti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan erkek ve disi iki cift yapmıstır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın oluleri diriltmeye gucu yetmez mi"
        }
    ]
}