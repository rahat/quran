{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "(Her seyden) yuce olan Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratan ve bicim veren"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir eden ve yol gosteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Merayı/otlagı cıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Ve onu kuru ota ceviren O’dur"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur’an’ı) okutacagız, sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allah’ın diledigi dısında.. Cunku O, acıktakini de gizli olanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Kolay olması icin seni basarılı kılacagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde, ogut/uyarı fayda verecekse ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkan ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Isyankar olan ondan kacar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O, buyuk atese girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Orada ne olur; ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Arınan kurtulusa ermistir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp, namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Siz, dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret ise daha iyi ve kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, evvelkilerin sahifelerinde de (yazılıdır)"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim’in ve Musa’nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Buruyen/ansızın gelecek olanın haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun, yuzler vardır yere yıkılmıs"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısmıs, bosa yorulmus"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın atese yaslanan"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan icen"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara kuru dikenden baska yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne semirtir ne aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gunde yuzler vardır pırıl pırıl"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Calısmasından hosnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yukseltilmis sedirler/yataklar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Doldurulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmazlar mı deveye? Nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve goge.. Nasıl yukseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve daglara.. Nasıl dikildi"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yere.. Nasıl yayıldı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Hatırlat/uyar! Sen ancak uyarıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlar uzerinde bir zorba degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak, kim yuz cevirir ve nankor/kafir olursa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en buyuk cezaya carptırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusu bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da onların hesabını gormek bize duser"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun Fecre"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On Gece’ye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Cifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gecip giden geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Bunda akıl sahibi icin bir yemin var mıdır"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Ad kavmine Rabbin neler yaptı, gormedin mi"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sutunlar sahibi Irem’e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ve sehirler arasında bir benzeri yaratılmamıstı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Ki vadide kayalar oyan Semud’a"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Kazıklar/pramitler sahibi Firavun’a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Onlar, ulkelerde azmıslardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda fesadı cogaltmıslardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Rabbin de onlara azap kırbacı yagdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Cunku Rabbin gozetleyip durmaktadır"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Iste insan, onu Rabbi imtihan ettigi zaman, ona ikramda bulunup, nimetlendirince: -Rabbim bana ikramda bulundu der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama onu, imtihan edip, rızkını daralttıgında: -Rabbim bana ihanet etti, der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır, yetime ikramda bulunmuyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Duskunu doyurmaya tesvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası da hak gozetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı da pek cok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, Yer paramparca oldugu zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin ve saf saf melekler geldiginde"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Iste cehennem o gun getirilir. Ve insan o gun dogruyu hatırlar. Ama nasıl ogut alacak"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Oysa dunya hayatının ve imtihanın sona erdigi o gun ogut alma gunu degil, karar gunudur. Orada gercegi anlamak artık ise yaramaz. Ve insanlar her seyin gercekliginin butun cıplaklıgı ile gozler onune serildigi o gun soyle der: -Keske hayatım icin hazırlıkta bulunsaydım"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Iste, hic kimse o gun Allah’ın cezalandırdıgı gibi cezalandıramaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "Hic kimse onun bagladıgı gibi baglayamaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura ermis can"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Hosnut olarak, hosnut olunarak Rabbine don"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Kullarımın arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Ve gir cennetime"
        }
    ]
}