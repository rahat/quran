{
    "maqras": [
        {
            "chapter": 76,
            "verse": 19,
            "text": "Etrafında olumsuz gencler dolasır. Onları gordugun zaman sacılmıs inci sanırsın"
        },
        {
            "chapter": 76,
            "verse": 20,
            "text": "Nereye baksan, nimet ve buyuk bir saltanat gorursun"
        },
        {
            "chapter": 76,
            "verse": 21,
            "text": "Uzerlerinde yesil ipekli ve parlak atlastan elbiseler vardır. Gumus bilezikler takınmıslardır. Rableri onlara tertemiz bir icecek icirmistir"
        },
        {
            "chapter": 76,
            "verse": 22,
            "text": "Iste bu, sizin icin bir oduldur. Sizin calısmanızın karsılıgıdır"
        },
        {
            "chapter": 76,
            "verse": 23,
            "text": "Suphesiz Kur’an’ı sana asama asama indiren biziz"
        },
        {
            "chapter": 76,
            "verse": 24,
            "text": "Oyleyse, Rabbinin hukmu icin sabret, onlardan hicbir gunahkara ve kafire itaat etme"
        },
        {
            "chapter": 76,
            "verse": 25,
            "text": "Sabah, aksam Rabbinin adını zikret"
        },
        {
            "chapter": 76,
            "verse": 26,
            "text": "Geceleri de ona secde et ve gece boyunca onu tesbih et"
        },
        {
            "chapter": 76,
            "verse": 27,
            "text": "Onlar, acele olanı istiyorlar, arkalarındaki agır bir gunu arkalarında bırakıyorlar"
        },
        {
            "chapter": 76,
            "verse": 28,
            "text": "Onları yaratan ve eklemlerini/mafsallarını pekistiren biziz. Diledigimiz zaman onları benzerleriyle biz degistiririz"
        },
        {
            "chapter": 76,
            "verse": 29,
            "text": "Suphesiz bu bir uyarıdır/oguttur. Dileyen kimse Rabbine giden yolu tutar"
        },
        {
            "chapter": 76,
            "verse": 30,
            "text": "Allah dilemedikce siz dileyemezsiniz. Cunku, Allah, her seyi bilendir, hakimdir"
        },
        {
            "chapter": 76,
            "verse": 31,
            "text": "Diledigini rahmetine girdirir. Zalimlere de acı bir azap hazırlamıstır"
        },
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun, birbiri ardınca gonderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Siddetle esip savrulanlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydıkca yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ayırdıkca ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Uyarıyı/zikri ulastıranlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ozur veya korkutmak icin"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size vaadedilen elbette gerceklesecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızların ısıgı sondugu zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar un ufak savruldugu zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Elciler toplandıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Hangi gune ertelenmis"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hukum/ayırma gunune"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hukum gununun ne oldugunu ne bilirsin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Evvelkileri yıkıma ugratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Daha sonra da geridekileri onlara tabi kılarız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Iste suclulara boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Ve suyu saglam bir yere yerlestirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Buna gucumuz yetti. Ne guzel guc yetirenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryuzunu toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Dirilere ve olulere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yuksek daglar yaratıp, size tatlı su icirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Vay haline o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi yalanladıgınıza yuruyun"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Yuruyun uc kollu karaltıya"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Golgelendirmez, alevden de korumaz"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Kutuk buyuklugunde kıvılcımlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o sarı halatlar gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Vay haline o gun, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konusamayacakları bir gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ozur dilemeleri icin onlara izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Vay haline o gunu yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, hukum gunudur. Sizi ve evvelkileri bir araya toplarız"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eger bana karsı bir tuzagınız varsa, onu hemen kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Vay o gun yalanlayanların haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Allah’tan sakınanlar ise golgeler ve pınar baslarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Arzu ettikleri meyveler"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınıza karsılık afiyetle yiyin, icin"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, iyilik yapanları iste boyle odullendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Yalanlayanların o gun vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin ve azıcık faydalanın, nasılsa siz suclusunuz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Vay haline o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara: -Boyun egin denildigi zaman boyun egmiyorlardı"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Vay haline o gun yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Bundan sonra hangi soze inanacaklar"
        }
    ]
}