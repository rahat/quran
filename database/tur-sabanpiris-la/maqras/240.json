        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: -Mahlukatın Rabbine sıgınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Coktugu zaman karanlıgın serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Dugumlere ufleyenlerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Haset ettigi zaman hasetcinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: -Insanların Rabbine sıgınırım"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Insanların hakimine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Insanların ilahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Sinsi vesvesecinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Insanların gonullerine vesvese sokan"
        },
        {
            "chapter": 114,
            "verse": 6,
