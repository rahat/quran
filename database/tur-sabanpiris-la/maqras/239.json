{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin gogsunu ferahlatıp, genisletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yukunu uzerinden indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Sanını / anlayısını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Suphesiz her zorlukla, bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Yine her zorlukla bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Oyleyse bir isi bitirince digerine giris"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Yalnız Rabbine ragbet et / yonel"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun, Incir ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dagı’na"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve bu guvenli beldeye"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz, insanı en guzel sekilde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Daha sonra, onu asagıların en asagısına indirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Kendilerine kesintisiz bir odul verilecek olan iman edip dogruları yapanlar dısında"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "O halde, sana dini/hesap gununu yalan saydıran nedir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Allah, hakimlerin hakimi degil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku! Yaratan Rabbinin adıyla"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Insanı alaktan yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku! Rabbin, en comerttir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalemle ogreten"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini ogretendir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır! Suphesiz insan azgınlık ediyor"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendisini ihtiyacsız gormekle"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Oysa, donus Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engelleyeni gordun mu"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gordun mu? Eger hidayet uzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya takvayı emrettiyse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu? Eger, yalanlamıs ve yuz cevirmisse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Allah’ın gordugunu bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır! Eger son vermezse, elbette perceminden yakalayıp, surukleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, gunahkar perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Haydi cagırsın cetesini/meclisini"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Cagıracagız zebanileri"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır! ona itaat etme! Secde et ve yaklas"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Suphesiz biz, (Kur’an’ı) Kadir gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir gecesinin ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir gecesi bin aydan hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh, Rabbinin izni ile her is icin o gece iner"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "O, tan yeri agarana dek esenliktir"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap ehlinden ve musriklerden inkar edenler, kendilerine acık belgeler gelinceye kadar ayrılanlar olmadılar"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "Allah’tan kendilerine tertemiz sahifeler okuyan bir elci"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "Icinde degerli yazıların bulundugu (sahifeler)"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kendilerine kitap verilenler, ancak kendilerine apacık belgeler geldikten sonra ayrılıga dustuler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Onlar, sadece dini/otoriteyi Allah’a has kılan hanifler olarak ona kulluk etmek, namazı kılmak, zekatı vermek ile emrolunmuslardı. Iste dosdogru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap ehlinden ve musriklerden inkar edenler, icinde ebedi kalacakları cehennem atesindedirler. Iste onlar, yaratılmısların en serlileridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "Iman eden ve dogruları yapanlar ise, iste onlar, yaratılmısların en hayırlıları onlardır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların odulu, Rab’leri katında, altından ırmaklar akan ve icinde ebedi kalacakları Adn cennetleridir. Allah, onlardan razı olmustur. Onlar da Allah’tan razı olmuslardır. Iste bu mukafat, Rabbinden korkanındır"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, tam bir sarsıntı ile sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insan: -Buna ne oluyor? dediginde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun, haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar yaptıklarını gormeleri icin boluk boluk gelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre agırlıgınca iyilik yapmıssa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre agırlıgınca kotuluk yapmıssa onu gorur"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun, soluya soluya kosanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Kosarken) kıvılcım sacanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Toplulugun ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Insan, Rabbine karsı gercekten nankordur"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Kendisi de buna sahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Suphesiz onun mal sevgisi de cok siddetlidir"
        }
    ]
}