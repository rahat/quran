{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Gerceklesecek olan gerceklestigi zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Bunun olacagı yalan degildir"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Yer sarsıldıkca alcalacak, sarsıldıkca yukselecektir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca oldugu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Un ufak etrafa dagıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Siz de uc gruba ayrılmıs olacaksınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag taraf halkı... Ne sag taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol taraf halkı... Ne sol taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve onde olanlar, oncudurler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar, en gozde olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Suslenmis tahtlar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsı karsıya oturup, arkalarına yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında olumsuz genc hizmetciler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Tertemiz kaynagından doldurulmus ibrikler, testiler ve fincanlarla"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bas agrısı vermeyen ve sersemlestirmeyen"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendiklerinden meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki sedef icindeki inciler.. gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık mukafat olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos ve gunaha sokacak bir soz isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnızca soylenen: -Selam, selamdır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tarafta olanlar, ne mutlu sag tarafta olanlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Kiraz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmıs golgede"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan sularda"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bitip tukenmeyen ve yasaklanmayan meyveler icinde"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tukenmeyen ve yasaklanmayan meyveler icinde"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuksek yataklar icindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o kadınları yeni bir yaratılısla yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler seklinde yarattık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine sevgi ile baglı olarak"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag taraftakiler icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Cogu da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol taraf halkı, nedir sol taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Kızgın ates ve kaynar su icindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman golgesi icinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serinlik yok, bagıs yok"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar, bundan once sorumsuzca ve konfor icinde yasıyorlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunah uzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz olup, toprak ve kemik olduktan sonra tekrar mı dirilecegiz? diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha onceki atalarımızda mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: -Oncekiler de sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir gunun, belli bir vaktinde bir araya getirileceksiniz"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapıklar, yalanlayanlar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette yiyeceksiniz zakkum agacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune iceceksiniz kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamıs develerin icisi gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Hesap gunu onların ziyafeti budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi yarattık, biz! Gerekmez mi tasdik etmeniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attıgınız spermleri gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz; yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda olumu takdir eden biziz! Onumuze de gecilemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi benzerlerinizle degistirmek ve sizi bilmediginiz bir sekilde yeniden yaratmak hususunda"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Ilk yaratılısınızı biliyorsunuz, dusunmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginiz seyleri gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onları bitiren siz misiniz; yoksa biz mi bitiriyoruz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek, onu cor cop yaparız da sasırıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Borca battık, hayır biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Borca battık, hayır biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ictiginiz suyu gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Isteseydik onu tuzlu bir su yapardık; sukretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Caktıgınız atesi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yarattınız; yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz, onu bir ibret ve ihtiyac sahipleri icin faydalı kıldık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde yuce Rabbinin adını tesbih et"
        }
    ]
}