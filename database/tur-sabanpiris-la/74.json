{
    "chapter": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Ey ortuye burunen"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Kalk ve uyar"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Ve Rabbinin buyuklugunu acıkla"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Elbiseni temizle"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Pislikten uzak dur"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Yaptıgın iyiligi cok gorme"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Rabbin icin sabret"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Sur’a uflendigi zaman"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Iste o gun zor bir gundur"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Kafirler icin hic kolay degildir"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Beni, yarattıgım kimse ile yalnız bırak"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Ona pek cok mal verdim"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "Goz onunde ogullar verdim"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "Ona verdikce verdim"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Daha da artırmamı umuyor"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Asla, cunku o, ayetlerimize karsı inatcı oldu"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Onu sarp bir yokusa surecegim"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Cunku o dusundu ve karar verdi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Kahrolası nasıl da karar verdi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Bir daha kahrolası nasıl da degerlendirdi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra baktı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra kaslarını catıp, surat astı"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arkasını donup buyuklendi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Ve soyle dedi: -Bu sadece ogretilegelen bir sihirdir"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu insan sozunden baska bir sey degil"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Onu Sekar’a sokacagım"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sekar’ın ne oldugunu bilir misin sen"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, ne geri bırakır ne de vazgecer"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Derileri yakıp kavurur"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Uzerinde on dokuz (melek) vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Ates bekcilerini yalnızca meleklerden kıldık. Onların sayısını da ancak kafir olanları denemek, kitap ehlinin kesin bilgiye ulasması ve iman edenlerin de imanını artırmak icin verdik. Kitap ehli ve mu’minlerin suphe etmemesi, kalplerinde hastalık olanların ve kafirlerin de: -Allah bu misalle ne demek istiyor? demesi icin (verdik). Allah, diledigini iste boyle sapıklıkta bırakır, diledigine de yol gosterir. Rabbinin ordularını kendisinden baskası bilemez. Bu, insanlar icin bir uyarıdan baska bir sey degildir"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, Ay’a andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Donup gelen geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Aydınlanan sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Ki o, buyuk bir seydir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Insanlar icin bir uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Aranızdan ileri gelenler veya geri kalanlar icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Herkes kazancına baglı bir rehinedir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Sadece sag yandakiler"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennettedirler. Ve sorustururlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Sucluları"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi cehenneme sevkeden nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Namaz kılanlardan degildik, dediler"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Duskunleri doyurmuyorduk"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batıla dalanlarla biz de dalıyorduk"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Hesap gununu yalanlıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Olum bize gelene dek"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık sefaatcilerin sefaati onlara bir yarar saglamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Oyleyse, onlara ne oluyor da uyarıdan yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki onlar, aslandan kacan yaban esekleri gibidir"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Sanki onlar, aslandan kacan yaban esekleri gibidir"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Belki de onların her biri onlerine acılmıs bir sahife verilmesini istiyorlar"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, aksine onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Gercek su ki bu bir uyarıdır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Ogut almak isteyen kimseye"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Allah dilemedikce ogut almazlar. Kendisinden korkulmaya layık olan O’dur, bagıs sahibi O’dur"
        }
    ]
}