{
    "rukus": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur’anı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes ve ay bir hesaba baglıdır"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler, agaclar da boyun egerler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "(Allah) Gogu yukseltip, ona da bir olcu koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "O halde, olcude egrilik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Dogru tartın, eksik tartmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Yeryuzunu yarattıkları icin alcalttı. Boyun egdirdi"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyveler, salkım salkım hurmalar"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yapraklı taneler ve hos kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Oyleyse Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı iyice pismis gibi kuru balcıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de yalın bir alevden yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "O halde Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "O, iki dogunun da Rabbi, iki batının da Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Oyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "Iki denizi birbiriyle kavussun diye salıvermistir"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Birbirine kavusmasını onleyen aralarında bir engel vardır"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Oyleyse Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "Onlardan inci ve mercan cıkar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Oyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizlerde yuzen daglar gibi gemiler de Onundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Oyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        }
    ]
}