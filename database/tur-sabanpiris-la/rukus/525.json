{
    "rukus": [
        {
            "chapter": 83,
            "verse": 1,
            "text": "Olcude hile yapanların vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Insanlardan/halktan aldıklarında tam alan"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Onlara tartıp olctuklerinde eksik verenler"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, yeniden dirileceklerini dusunmuyor/sanmıyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gunde"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gun insanlar, alemlerin Rabbi icin ayaga kalkar"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Hayır! Suphesiz gunahkarların kitabı siccindedir"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Siccinin ne oldugunu nereden bileceksin"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Isaretlenmis bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "Yalanlayanların o gun vay haline"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Din gununu yalanlayanların"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Onu, her haddi asan gunahkardan baskası yalanlamaz"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Ona ayetlerimiz okundugu zaman ‘evvelkilerin masalları’ der"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Hayır! aksine, kazandıkları onların kalplerini paslandırmıstır"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Hayır! Gercek su ki, onlar o gun Rab’lerinden mahrum olanlardır"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Sonra da onlar cehenneme atılacaklardır"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Sonra da onlara denilecek ki: -Bu yalanlamıs oldugunuz seydir"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Hayır, (gercek su ki), iyilerin kitabı, illiyyun´dadır"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "Illiyyun’un ne oldugunu nereden bileceksin"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Isaretlenmis bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Mukarrebun/yakınlastırılmıs olanların sahitlik ettigi"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Iyiler, elbette nimetler icindedir"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Tahtlar uzerinde, bakıyorlar"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Onları, yuzlerindeki nimet parıltısından tanırsın"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Onlar, muhurlenmis, katıksız bir icecekten icerler"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Onun muhru misktir. Yarısanlar, iste bunun icin yarıssınlar"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Ona tesnim’den katılır"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "O, onculerin/yaklastırılanların icecegi bir kaynaktır"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Suc/gunah islemis olanlar, iman edenlere guluyorlardı"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Onların yanlarından gectiklerinde birbirlerine kas goz ediyorlardı"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Ailelerinin yanına donduklerinde alay ederek donerlerdi"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Onları gordukleri zaman: -Iste bunlar, dogru yoldan sapmıs derlerdi"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Oysa onlara bekci olarak da gonderilmemislerdi"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Bugun de iman edenler, kafir olanlara gulerler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Tahtlarına yaslanıp bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Kafirler, yaptıklarının cezasını gorduler mi? diye"
        }
    ]
}