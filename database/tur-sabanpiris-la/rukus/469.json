{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Gerceklesecek olan gerceklestigi zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Bunun olacagı yalan degildir"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Yer sarsıldıkca alcalacak, sarsıldıkca yukselecektir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca oldugu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Un ufak etrafa dagıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Siz de uc gruba ayrılmıs olacaksınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag taraf halkı... Ne sag taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol taraf halkı... Ne sol taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve onde olanlar, oncudurler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar, en gozde olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Suslenmis tahtlar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsı karsıya oturup, arkalarına yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında olumsuz genc hizmetciler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Tertemiz kaynagından doldurulmus ibrikler, testiler ve fincanlarla"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bas agrısı vermeyen ve sersemlestirmeyen"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendiklerinden meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki sedef icindeki inciler.. gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık mukafat olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos ve gunaha sokacak bir soz isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnızca soylenen: -Selam, selamdır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tarafta olanlar, ne mutlu sag tarafta olanlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Kiraz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz agaclarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmıs golgede"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan sularda"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bitip tukenmeyen ve yasaklanmayan meyveler icinde"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tukenmeyen ve yasaklanmayan meyveler icinde"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuksek yataklar icindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o kadınları yeni bir yaratılısla yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler seklinde yarattık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine sevgi ile baglı olarak"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag taraftakiler icin"
        }
    ]
}