{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi mi (yeniden) yaratmak daha guctur; yoksa gogu mu? Onu bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Yukseklere kaldırdı ve duzenledi"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karanlık yaptı, gunduzunu aydınlıga cıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeri, bundan sonra yaydı"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagını cıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dagları da yerlestirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın yararlanması icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "En buyuk baskın geldigi zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gun insan neye calıstıgını hatırlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Goren kimselere cehennem gosterilir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Kim azdıysa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dunya hayatını tercih ettiyse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Cehennem onun varacagı yerdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ama, kim de Rabbinin makamından korkup, kendisini heveslerine uymaktan alıkoymussa"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Cennet de onun varacagı yerdir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyametin ne zaman gerceklesecegini soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Senin neyine ondan haber vermek"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Rabbine aittir, onun sonucu"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkan kimseye bir uyarıcısın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gordukleri gun, onlar sanki, sadece bir aksam veya bir kusluk vakti suresince (dunyada) kalmıs olurlar"
        }
    ]
}