{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi sorusturup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Buyuk haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Onlar ki, hakkında ihtilaf ediyorlar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, yakında ogrenecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Sonra, Hayır, yakında ogrenecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeri bir besik kılmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi de cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi ortu kıldık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu de gecimlik kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuze de sapasaglam yedi kat bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Isık sacan bir de lamba yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Yogun bulutlardan sarıl sarıl su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler ve bitkiler cıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine girmis sarmas dolas bahceler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Ayırım/fasl gunu belirlenmis bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur’a uflendigi gun boluk boluk geleceksiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "(O gun) gok acılıp, kapı kapı olmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulup, serap olmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem de gozlemektedir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınların varacagı yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada caglar boyu kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne serinlik ne de icecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Kaynar su ve irinden baska"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Uygun bir ceza"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar, hesabı ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi yalanladıkca yalanlamıslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Her seyi sayıp bir kitap/yazıt olarak kaydetmistik"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Iste, tadına bakın, size azaptan baska bir sey artırmayacagız"
        }
    ]
}