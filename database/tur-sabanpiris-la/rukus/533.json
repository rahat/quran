{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun Gunes’e ve aydınlıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu takip eden Ay’a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu ortaya koyan gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Cana ve onu duzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kotulugu ve korunmayı ilham edene"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Ki onu arındıran kurtulusa ermistir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kotuluge gomen ise mahvolmustur"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud azgınlıgı sebebiyle yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri atılmıstı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Oysa Allah’ın Resulu, onlara: -Allah’ın devesine ve su hakkına riayet edin! demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "O’nu yalanladılar ve deveyi kestiler de Rab’leri sucları sebebiyle onları kırıp gecirdi, yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bunun sonucundan Allah’ın bir endisesi yoktur"
        }
    ]
}