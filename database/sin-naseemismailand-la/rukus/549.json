{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "(nabiye! viniscaya dina) tinduva boru karannava oba (avadhanaya kara) bæluvehida"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "(disavak nomæti) anathayinva elava damanna ohuya"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "ohu duppatunta (ahara laba nodena atara) ahara laba dena men (an ayava) polambavanneda næta"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "tavada tamange salatayehi nosælakilimatva sitina"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(vamcanikayin vana) salat karannantada vinasayayi"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "ovun (salat kala vuvada janatavata) penvima sandahama salat karannaha"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "(indi katu væni) alpa vastuvada (pavicci kara apasu dimata vuvada) valakva gannaha"
        }
    ]
}