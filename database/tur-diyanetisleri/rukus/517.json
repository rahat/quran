{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Allah'a karşı gelmekten sakınmış olanlar, elbette gölgeliklerde ve pınar başlarındadırlar"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Canlarının istediği meyveler arasındadırlar"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Onlara denir ki: \"İşlediklerinize karşılık afiyetle yiyiniz, içiniz"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, iyi davrananlara işte böyle karşılık veririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "O gün yalanlamış olanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyiniz, biraz zevkleniniz bakalım, doğrusu sizler suçlularsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "O gün yalanlamış olanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara \"Rüku edin\" denildiğinde rükua varmazlar"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "O gün yalanlamış olanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Kuran'dan başka hangi söze inanacaklar"
        }
    ]
