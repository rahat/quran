{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneşe ve onun ışığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu ortaya koyan gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu bürüyen geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu yapana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Kişiye ve onu şekillendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona iyilik ve kötülük kabiliyeti verene and olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Kendini arıtan saadete ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Kendini fenalıklara gömen kimse de ziyana uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud milleti, içlerinden en azgını ileri atılınca, azgınlığı yüzünden peygamberleri yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Semud milleti, içlerinden en azgını ileri atılınca, azgınlığı yüzünden peygamberleri yalanladı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın peygamberi onlara, Allah'ın devesini göstermiş ve: \"Allah'ın bu devesine ve onun su hakkına dokunmayın\" demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanladılar ve deveyi boğazladılar. Bunun üzerine Rableri, suçlarından dolayı onların üzerine katmerli azap indirdi; yerle bir etti onları"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bu işin sonundan O'nun korkusu yoktur"
        }
    ]
}