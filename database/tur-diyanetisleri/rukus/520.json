{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Canları boğarcasına şiddetle çekip alanlara and olsun"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Canları kolaylıkla alanlara and olsun"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp yüzüp gidenlere and olsun"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıştıkça yarışan ve işleri yöneten meleklere and olsun"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Yarıştıkça yarışan ve işleri yöneten meleklere and olsun"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Peşinden bir diğeri gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün kalbler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "İnsanların gözleri yere döner"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki: \"Biz eski halimize mi döndürüleceğiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmış kemik olduğumuz zaman mı"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Derler ki: \"O takdirde bu zararına bir dönüştür"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Doğrusu bir tek çığlık yetecektir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hepsi hemen bir düzlüğe dökülecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa'nın başından geçen olay sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Tuva'da, kutsal bir vadide, Rabbi ona şöyle hitap etmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun'a git; doğrusu o azmıştır"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: Arınmağa niyetin var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbine giden yolu göstereyim ki O'na saygı duyup korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Bunun üzerine ona en büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Ama Firavun yalanladı ve baş kaldırdı"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Geri dönüp yürüdü"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Adamlarını toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yüce rabbiniz benim\" dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah bunun üzerine onu dünya ve ahiret azabına uğrattı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Doğrusu bunda Allah'tan korkan kimseye ders vardır"
        }
    ]
}