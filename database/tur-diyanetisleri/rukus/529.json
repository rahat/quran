{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yüce Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O, yaratıp şekil vermiştir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O, her şeyi ölçüyle yapıp doğru yolu göstermiştir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O, yeşillikler bitirmiştir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları siyah çerçöpe çevirmiştir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana Kuran'ı Biz okutacağız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allah'ın dilediği bundan müstesnadır. Doğrusu açığı da, gizliyi de bilen O'dur"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Kolay olanı yapmayı sana kolaylaştırırız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Faydalı olacaksa insanlara öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah'tan korkan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kaçınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O, en büyük ateşe yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O, orada ne ölecektir ne de dirilecektir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Arınmış olan, Rabbinin adını anıp namaz kılan, saadete erişecektir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Arınmış olan, Rabbinin adını anıp namaz kılan, saadete erişecektir"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama sizler dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha bakidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Doğrusu bu hükümler ilk sahifelerde, İbrahim ve Musa'nın sahifelerinde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Doğrusu bu hükümler ilk sahifelerde, İbrahim ve Musa'nın sahifelerinde de vardır"
        }
    ]
}