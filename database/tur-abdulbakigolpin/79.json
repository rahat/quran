{
    "chapter": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun şiddetle çekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Ve neşeli neşeli yürüyenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Ve yüze yüze gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Ve herkesi geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve işi tedbirle yapanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün, bir sarsıntıdır, sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir sarsıntı daha gelir çatar"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Yürekler, belinleyip korkar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri yere dikilir"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Onlar derler ki: Çukura atıldıktan sonra mı dirileceğiz de çıkacağız"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmış bir kemik yığını haline geldikten sonra mı olacak bu iş"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyleyse derler, bu, pek ziyanlı bir dönüş"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Halbuki o, bir tek haykırış"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Derken onlar dümdüz bir yerde toplanırlar"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Gelmedi mi Musa'ya ait söz sana"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi, kutlu Tuva vadisinde nida etmişti ona"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Git Firavun'a, şüphe yok ki o, azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: İster misin temizlenmeyi"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Ve sana Rabbinin yolunu göstereyim de korkasın, saygı duyasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Derken ona en büyük delili göstermişti"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Oysa yalanlamıştı, karşı gelmişti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra da geri dönmüştü de koşup gitmişti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken halkı toplamıştı da bağırmıştı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben, sizin en yüce Rabbinizim demişti"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Derken Allah onu, dünyada da, ahirette de azaplandırarak helak etmişti"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Şüphe yok ki bunda bir ibret var korkanlara"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha güç sizce, yoksa göğü yaratmak mı? Onu kurdu"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Tavanını yücelti, düzüp koştu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Ve gecesini kararttı, kuşluk çağını meydana çıkarttı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeryüzünü de bundan sonra yaydı, döşedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Oradan suyunu, otlağını çıkarıp meydana getirdi"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Ve dağlarını oturttu"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın faydası için"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Derken o pek büyük felaket gelip çatınca"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "İnsan, o gün anlar, hatırlar neye çalıştığını"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Ve cehennem, belirtilir görene"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim azmışsa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dünya yaşayışını üstün tutmuşsa"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Artık cehennemdir onun yeriyurdu"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ve ama kim, Rabbinin durağından korkup da nefsi, dileğinden çekmişse"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Şüphe yok ki cennettir onun yeriyurdu"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Senden sorarlar kıyameti, ne vakit kopacak"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen, onu ne bilirsin ki ne anlatacaksın"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun sonu, Rabbine aittir, o bilir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak, korkanı korkutansın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gördükleri gün, bir akşamcık yaşamışa dönerler, yahut da günün kuşluk çağı"
        }
    ]
}