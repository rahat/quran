{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yeryüzü, şiddetli bir depremle sarsılınca"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yeryüzü, ağırlıklarını çıkarınca"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan, ne oluyor ki buna deyince"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün, bütün haberlerini anlatınca"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin, vahyetmiştir, bildirmiştir ona"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, gittikleri yerden gelirler, yaptıklarını görmek için"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim, bir zerre ağırlığı hayır yapmışsa görür onu"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim, bir zerre ağırlığı şer yapmışsa görür onu"
        }
    ]
}