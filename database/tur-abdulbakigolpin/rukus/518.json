{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi birbirlerine sorup dururlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Pek ulu haberi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Öylesine haber ki onlar, bu hususta aykırılığa düşmüşlerdir"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, bilirler yakında"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Gene de hayır, bilirler yakında"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryüzünü, hazır bir yaygı olarak yaymadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Ve dağları, çiviler gibi çaktık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi, çiftçift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Ve uykunuzu, vakitli bir istirahat zamanı kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Ve geceyi, her şeyi örten bir örtü yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Ve gündüzü de geçim zamanı"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ve üstünüzde, yedi sağlam yapı kurduk"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Ve yalımyalım yanan bir kandil yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Ve sıkılan bulutlardan şarılşarıl sular akıttık"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Akıttık da o sayede tohumları, otları"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine sarmaşdolaş bahçeleri, bağları meydana getirdik"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Şüphe yok ki ayırma gününün vakti de tayin edilmiştir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "O gün Sur üfürülür de gelirsiniz bölükbölük"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Ve gök açılmış, kapılar haline gelmiştir"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "ve dağlar yürütülmüş, seraba dönmüştür"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Şüphe yok ki cehennem pusudadır"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azanlara dönüp varılacak son yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Yıllar boyunca kalırlar orada"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Ne bir serinlik tadarlar, ne içilecek bir şey"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ancak bir kaynar su, ancak bir kan ve irin"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Bir cezadır ki tam uygun"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Şüphe yok ki onlar, hiçbir soru ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve delillerimizi boyuna yalanlarlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Ve biz her şeyi birbir sayıp yazdık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Artık tadın, ancak azabınızı arttırırız sizin"
        }
    ]
}