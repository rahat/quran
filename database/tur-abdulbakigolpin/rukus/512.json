{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Andolsun kıyamet gününe"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Ve andolsun kendini kınayıp duran nefse"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Sanıyor mu insan, kemiklerini hiç mi toplayamayız"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, değil kemiklerini, parmak uçlarını bile düzüp koşmaya gücümüz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Hayır, insan, ilerde olanı yalanlamak ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Ve kıyamet günü ne vakit diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Ve şaşırıp gözler dikilince"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ve ay tutulunca"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve güneşle ay birleştirilince"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "İnsan der ki o gün, nerede kaçacak yer"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, yok kaçacak, sığınacak yer"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gün Rabbinin katındadır karar edilecek yer"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gün önce yaptığı da haber verilir insana, sonra yaptığı da"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Hayır, insanın azası, aleyhine tanıklık eder"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Özürlerini ortaya dökse de"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Vahyi, acele edip okumak için dilini oynatıp durma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Şüphe yok ki onu toplayıp unutturmamak da bize düşer, okumak ve tertib etmek de"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Onu okuduk mu, uy okuyuşuna"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Onu anlatıp bildirmek de şüphesiz, bize düşer"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, siz geçip gideni seversiniz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ve ahireti bırakırsınız"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gün yüzler parlar, güzelleşir"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Ve Rablerine bakar"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Ve yüzler, asılır, kararır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Bellerini kıracak bir felaketi bekler"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Hayır; can, köprücük kemiklerine gelince"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Ve bir okuyup üfleyen yok mu denince"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Ve şüphe yok ki bu çağın, bir ayrılık çağı olduğunu anlayınca"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Ve baldır, baldıra dolaşınca"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gün, Rabbinin tapısına götürülür"
        }
    ]
}