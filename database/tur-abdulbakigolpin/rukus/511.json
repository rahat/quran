{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, gerçekten de andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Ve andolsun çekilip giderken geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve ışıklanıp doğarken güne"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Cehennem, şüphe yok ki pek büyük mahluklardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Korkutucudur insanları"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden, ileri geçip itaat edenleri ve geri kalıp isyana dalanları"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Herkes, kazancına bağlıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sağ taraf ehli başka"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetlerdedir onlar, soralar, konuşurlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Mücrimlerin halinden"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Nedir derler cehenneme sokan sizi"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Derler ki: Namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Ve yoksulu doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Ve boş laflarla azgınlığa dalanlarla biz de dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ve ceza gününü yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Bize ölüm gelip çatıncaya dek"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Derken şefaatçilerin şefaati fayda vermez onlara"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Derken ne oluyor onlara ki öğütten, Kur'an'dan yüz çevirmedeler, kaçmadalar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki yabani eşeklerdir onlar da"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan kaçıyorlar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onların herbiri, ister ki apaçık sahifeler verilsin onlara"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, öyle değil, onlar, ahiretten korkmazlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Gerçekten de Kur'an, bir öğüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Artık dileyen, öğüt alır onunla"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Ve Allah'ın dilediğinden başkası öğüt alamaz; odur çekinilmeye değer ve yarlıgayıp suçları örter"
        }
    ]
}