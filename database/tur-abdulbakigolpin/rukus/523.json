{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürülünce"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Ve yıldızlar kararınca"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Ve dağlar yürütülünce"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Ve dişi develer bile başı boş bırakılınca"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Ve vahşi hayvanlar bile bir araya toplanınca"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Ve denizler, coşup kabarınca"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ve insanlar, haldeşleriyle birleşince"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diridiri gömülen kıza sorulunca"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suç yüzünden öldürüldün diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Ve sahifeler dağılınca"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Ve göğün perdesi kaldırılınca"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Ve cehennem alevlendirilince"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklaştırılınca"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes bilir ne hazırladığını"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Artık andolsun dönüp kaybolan"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Doğup yürüyen ve burçlarına giren yıldızlara"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Ve geçmeye başladığı çağda, geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ve ışıdığı çağda, sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphe yok ki Kur'an, büyük bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Kuvvetlidir, arş sahibinin katında kadri yüce"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "İtaat edilir, emniyetlidir de"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizinle konuşan, deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Ve andolsun, onu, apaydın tanyerinde gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Arkadaşınız, gizli şeyler hakkında da nekes değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Ve Kur'an, taşlanmış Şeytan'ın sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Artık nereye gidiyorsunuz öyleyse"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, bütün alemlere bir öğüttür ancak"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Ve hele içinizden doğru hareket etmek isteyene"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ve isteyemezsiniz, alemlerin Rabbi Allah istemedikçe"
        }
    ]
}