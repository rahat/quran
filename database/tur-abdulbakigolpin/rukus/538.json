{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku Rabbinin adıyla ki bütün mahlukatı yarattı"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "İnsanı da bir parça kan pıhtısından var etti"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku ve Rabbin, pek büyük bir kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Öyle bir Rab ki kalemle öğretmiştir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini belletmiştir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "İş öyle değil, şüphe yok ki insan, azar elbette"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini ihtiyacı yok görürse"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Şüphe yok ki dönüş, Rabbinin tapısına"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gördün mü nehyedeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Bir kulu, namaz kılarsa"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Bir düşün, ya o doğru yolu bulup giderse"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut da çekinmeyi emrederse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü sen de, ya öbürü yalanlar ve yüz çevirirse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki Allah, bilir gerçekten de"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "İş öyle değil, vaz geçmezse eğer elbette tutarız perçeminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalan söyleyenin, yanlış hareket edenin perçeminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Derken hemdemlerini, kavmini, kabilesini çağırır"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de yakında zebanileri çağırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "İş öyle değil, itaat etme ona ve artık secde et de yaklaş"
        }
    ]
}