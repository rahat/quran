{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin göğsünü açıp genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve senin yükünü kaldırıp attık"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Öylesine yük ki çökertmişti belini"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve adını yücelttik"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Artık şüphe yok ki her güçlükle beraber bir de kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Şüphe yok ki her güçlükle beraber bir de kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Artık sen de ibadeti bitirince yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve ancak Rabbinden iste, ona doğrul"
        }
    ]
}