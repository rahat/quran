{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Tenzih et yücelerden yüce Rabbinin adını"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Bir Rab ki yarattı, derken düzüp koştu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Bir Rab ki ölçüp biçti, derken doğru yolu buldurdu"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Bir Rab ki otlağı çıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Derken onu kapkara, kupkuru bir hale döndürdü"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacağız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ancak Allah dilerse o başka; şüphe yok ki o, açığa vurulanı da, gizli kalanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve sana, en kolay yolda başarı vereceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Artık öğüt ver, fayda verirse eğer"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkan, öğüt alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "En kötü ve bahtsız olan, ondan sakınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Öyle bahtsız ki o, pek büyük ataşe atılır, yanar"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra da orada ne ölür, ne dirilir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Gerçekten de kurtulur, murada erer kendini temizleyen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ve Rabbinin adını anıp da namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır, siz dünya yaşayışını üstün tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiretse daha hayırlıdır ve daha da sürekli"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphe yok ki bu vardı, elbette daha önceki sahifelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nın sahifelerinde"
        }
    ]
}