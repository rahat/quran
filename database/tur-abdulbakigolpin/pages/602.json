{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Bunu da Kurayş'ın uzlaşması, hallerinin düzene girmesi için yaptı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kış, alışveriş için göçüp konarak yolculuk ederlerken uzlaşıp düzene girmeleri için"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Artık kulluk edin bu evin Rabbine"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Öyle Rab ki doyurdu da kurtardı sizi açlıktan ve emin etti sizi korkudan"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gördüm mü yalanlayanı dini"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte budur o kimse ki horlar yetimi"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ve doyurmaz da, önayak olmaz da doyurmaya yoksulu"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay hallerine o namaz kılanların"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Öylesine namaz kılanların ki namazlarını unuturlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Ve onlar, bütün işlerini gösteriş için yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve zekat vermeyi menederler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Şüphe yok ki biziz sana kevseri veren"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Artık namaz kıl Rabbine ve kurban kes sen"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Şüphesiz, sana buğzeden yok mu, odur nesli kesilen"
        }
    ]
}