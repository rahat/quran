{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır, siz dünya yaşayışını üstün tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiretse daha hayırlıdır ve daha da sürekli"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphe yok ki bu vardı, elbette daha önceki sahifelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim'in ve Musa'nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Geldi mi sana her yanı ve herkesi kavrayıp kaplayan o felaketin haberi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün yüzler eğilirler"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışıp çabalarlar, zahmete girip yorulurlar"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Pek kızgın ateşe atılırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Pek ıssı bir suyla suvarılırlar"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara orada yemek olarak ancak zehirli diken var"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler ve ne doyurur, açlığı defeder"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün yüzler, sevinçlidir, neşeye dalar"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Çalıştıklarından hoşnut olurlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüce cennettedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz duymazlar"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar var"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Ve konmuş sağraklar"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Ve sırasıra konmuş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Yeryer yayılmış döşemeler"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Hala mı bakmazlar deveye, nasıl da yaratılmış"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve göğe, nasıl da yüceltilmiş"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara, nasıl da dikilmiş"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yeryüzüne, nasıl da yayılmış"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık korkut, öğüt ver, sen, ancak bir korkutucusun, bir öğütçü"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlara musallat olmuş biri değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kabul etmeyen ve kafir olana gelince"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Artık onu Allah azaplandırır pek büyük bir azapla"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphe yok ki tapımızdır gelecekleri yer"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da şüphe yok ki hesaplarını görmek, bize düşer"
        }
    ]
}