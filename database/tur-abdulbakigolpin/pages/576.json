{
    "pages": [
        {
            "chapter": 74,
            "verse": 18,
            "text": "Şüphe yok ki o, iyice bir düşündü de kendince ölçtübiçti"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Geberesice nasıl da ölçtübiçti"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra gene de geberesice, nasıl da ölçütübiçti"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra baktı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra kaşını çattı, suratını astı"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "sonra ardını döndü ve ululanmaya kalkıştı"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Derken bu, ancak dedi, eskiden beri söylenegelen bir büyü"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu ancak insan sözü"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Onu yakıcı cehenneme atarım"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Ve bilir misin, nedir yakıcı cehennem"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "Yakar bitirir de gene bırakmaz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Derileri tamamıyla yakar kavurur"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "On dokuz memuru vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Ve biz, cehennem memurlarını, meleklerden tayin ettik ve kendilerine kitap verilenlerin iyideniyiye anlayıp inanmaları için ve inananların inancını arttırsın ve kendilerine kitap verilenlerle inananlar, şüpheye düşmesinler ve gönüllerinde hastalık olanlar ve kafirlerse, Allah bununla, bu örnekle neyi kastediyor ki desinler diye sayılarını on dokuz olarak taktir ettik. İşte böylece Allah, bildiğini saptırır ve dilediğini doğru yola sokar ve Rabbinin ordusu ne kadardır, ancak Allah bilir ve bu, insanlara bir öğüttür ancak"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, gerçekten de andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Ve andolsun çekilip giderken geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve ışıklanıp doğarken güne"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Cehennem, şüphe yok ki pek büyük mahluklardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Korkutucudur insanları"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden, ileri geçip itaat edenleri ve geri kalıp isyana dalanları"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Herkes, kazancına bağlıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sağ taraf ehli başka"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetlerdedir onlar, soralar, konuşurlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Mücrimlerin halinden"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Nedir derler cehenneme sokan sizi"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Derler ki: Namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Ve yoksulu doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Ve boş laflarla azgınlığa dalanlarla biz de dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ve ceza gününü yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Bize ölüm gelip çatıncaya dek"
        }
    ]
}