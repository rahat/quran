{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha guc, yoksa gokyuzunu yaratmak mı, ki onu Allah bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Onu yukseltti, duzene koydu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, gunduzunu agarttı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ondan sonra da yerkureyi dosedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Yerden suyunu ve otlagını cıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dagları saglam bir sekilde yerlestirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Kendiniz ve hayvanlarınız icin bir faydalanma olmak uzere"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Her seyi alt ust eden o buyuk felaket geldigi vakit"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Insanın yapıp ettiklerini hatırlayacagı gun"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Ve gorene cehennem acık bir sekilde gosterilmistir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim azmıssa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dunya hayatını ahirete tercih etmisse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Suphesiz cehennem (onun icin) tek barınaktır"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Rabbinin makamından korkan ve nefsini kotu arzulardan uzaklastırmıs kimse icin"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Suphesiz cennet (onun) yegane barınagıdır"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyameti sorarlar: Gelip catması ne zamandır? (derler)"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen onu nereden bilip bildireceksin"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun nihai ilmi yalnız Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkanları uyarırsın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Kıyamet gununu gorduklerinde (dunyada) sadece bir aksam vakti ya da kusluk zamanı kadar kaldıklarını sanırlar"
        }
    ]
}