{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gokyuzu yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar dokuldugu zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler birbirine katıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin icindekiler dısarı cıkarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Insanoglu (yapıp) gonderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Ihsanı bol Rabbine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yarattı, seni duzgun ve dengeli kılıp olculu bir bicim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni istedigi her hangi bir sekilde parcalardan olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Siz yine de dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Sunu iyi bilin ki uzerinizde bekciler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli yazıcılar var"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, yapmakta olduklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler muhakkak cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gununde oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar (kafirler) oradan bir daha da ayrılmazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gunu nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin? Nedir acaba o ceza gunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun hicbir kimse baskası icin bir sey yapamaz. O gun is Allah´a kalmıstır"
        }
    ]
}