{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Birbirlerine neyi soruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O buyuk haberden mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "(Inanıp inanmamakta) ayrılıga dusmektedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır! Anlayacaklar"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır! Onlar anlayacaklar"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz yeryuzunu bir dosek, yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi cifter cifter yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu de calısıp kazanma zamanı kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuzde yedi kat saglam gogu bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "(Orada) alev alev yanan bir kandil yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkısan bulutlardan sarıl sarıl akan sular indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Size tohumlar, bitkiler yetistirmek icin"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve agacları (birbirine) sarmas dolas bahceler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Suphesiz hukum gunu vakit olarak belirlenmistir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a uflendigi gun, boluk boluk Allah´a gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gokyuzu acılır ve orada pek cok kapılar olusur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulur, serap haline gelir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Suphesiz, cehennem pusuda beklemektedir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınların barınacagı yerdir (cehennem)"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "(Azgınlar) orada caglar boyu kalacaklar"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada bir serinlik ya da (susuzluk gideren) bir icecek tatmazlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Kaynar su ve irin (tadarlar)"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Ancak (dunyada yaptıklarına) uygun karsılık olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar hesap gununu (gelecegini) ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Bizim ayetlerimizi yalanladıkca yalanlamıslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz ise her seyi bir kitapta sayıp yazmısızdır"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Tadın! Bundan sonra yalnızca azabınızı arttıracagız"
        }
    ]
}