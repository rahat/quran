{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine kulak verip boyun egecek hale getirildigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dumduz edildigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icinde bulunanları atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabb´ini dinleyip O´na hakkıyla itaata mecbur kılındıgı vakit (insanoglu yaptıkları ile karsılasır)"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Suphe yok ki sen Rabbine karsı caba ustune caba gostermektesin; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Derhal yok olmayı isteyecek"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Zira o, (dunyada) ailesi icinde (mal mulk sebebiyle) sımarmıstı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O hicbir zaman Rabbine donmeyecegini sandı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Oysa gercekten Rabbi onu goruyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Hayır! Safaga, yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve onda basan karanlıga"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay olmus aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Boyleyken onlar acaba neden iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlar kendilerine Kur´an okununca secde de etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, kafirler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah onların gizledigi seyleri cok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "(Resulum!) Onlara acı azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Iman edip salih amel isleyenler baskadır; onlar icin arkası kesilmeyen bir mukafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burclara sahip gokyuzune"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Gelecegi bildirilmis olan gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(O gunde) tanıklık edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendegin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O cıralı atesin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar (yakanlar) da baslarına oturmuslar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Muminlere yapmakta oldukları iskenceyi seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan, sırf, aziz ve hamid olan Allah´a iman ettikleri icin intikam aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, goklerin ve yerin mulku kendisine aittir ve Allah her seye sahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Suphesiz inanmıs erkeklerle inanmıs kadınlara iskence edip sonra tevbe de etmeyenlere cehennem azabı ve (orada) yanma cezası vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Iman edip salih ameller isleyenlere ise, zemininden ırmaklar akan cennetler vardır. Iste buyuk kurtulus budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Suphesiz Rabbinin yakalaması cok siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Bilin ki O, (kainat yokken) ilk olarak yaratan, (olumden sonra tekrar hayatı) geri getirendir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, cok bagıslayan ve cok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Serefli Ars´ın sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigi seyleri mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların, haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud´un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Dogrusu inkarcılar (gercegi) yalanlayıp dururlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arkalarından kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır o serefli bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Gokyuzune ve tarıka (sabah yıldızına) yemin ederim"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarıkın ne oldugunu nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(O, karanlıgı) delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hic kimse yoktur ki uzerinde bir koruyucu, bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Insan neden yaratıldıgına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(O su) sırt ile gogus kafesi arasından cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Iste Allah (baslangıcta bu sekilde yarattıgı) insanı tekrar yaratmaya da kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlenenlerin ortaya dokuldugu gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "O gun insan icin ne bir guc ne de bir yardımcı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Donus sahibi olan (yagmur yagdıran) goge, yemin ederim ki"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(Nebat ile) yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Suphesiz Kur´an, (hak ile batılı) ayıran bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, asla bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kurarlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun icin Kafirlere muhlet ver, onları biraz kendi hallerine bırak (pek yakında destegimiz sana gelecek)"
        }
    ]
}