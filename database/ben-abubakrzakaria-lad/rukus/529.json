{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Āpani āpanāra sumahāna rabēra nāmēra pabitratā ō mahimā ghōṣaṇā karuna"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "yini [1] sr̥ṣṭi karēna [2] ataḥpara suṭhāma karēna"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Āra yini nirdhāraṇa karēna [1] ataḥpara pathanirdēśa karēna"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "āra yini tr̥ṇādi uṯpanna karēna"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "parē tā dhūsara ābarjanāẏa pariṇata karēna"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Śīghra'i āmarā āpanākē pāṭha karāba, phalē āpani bhulabēna nā"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "āllāh yā icchē karēna tā chāṛā [1]. Niścaẏa tini jānēna yā prakāśya ō yā gōpanīẏa"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Āra āmarā āpanāra jan'ya sugama karē dēba sahaja patha"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ataḥpara upadēśa yadi phalaprasū haẏa tabē upadēśa dina"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "yē bhaẏa karē sē'i upadēśa grahaṇa karabē"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Āra tā upēkṣā karabē yē nitānta hatabhāgya"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "yē bhaẏābaha āgunē dagdha habē"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "tārapara sēkhānē sē marabē'ō nā bām̐cabē'ō nā"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Abaśya'i sāphalya lābha karabē yē pariśud'dha haẏa"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ēbaṁ tāra rabēra nāma smaraṇa karē ō sālāta kāẏēma karē"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Kintu tōmarā duniẏāra jībanakē prādhān'ya dā'ō"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "athaca ākhirāta'i uṯkr̥ṣṭa [1] ō sthāẏī"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Niścaẏa ēṭā āchē pūrbabartī sahīphāsamūhē"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ibrāhīma ō mūsāra sahīphāsamūhē"
        }
    ]
}