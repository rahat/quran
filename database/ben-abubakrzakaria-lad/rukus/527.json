{
    "rukus": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "Śapatha burūjabiśiṣṭa [1] āsamānēra"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "āra pratiśruta dinēra"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "ēbaṁ draṣṭā ō dr̥ṣṭēra"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "abhiśapta haẏēchila [1] kuṇḍēra adhipatirā"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "yē kuṇḍē chila indhanapūrṇa āguna"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "yakhana tārā ēra pāśē upabiṣṭa chila"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "ēbaṁ tārā muminadēra sāthē yā karachila tā pratyakṣa karachila"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Āra tārā tādērakē niryātana karēchila śudhu ē kāraṇē yē, tārā īmāna ēnēchila parākramaśālī ō praśansāra yōgya āllāhara upara"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "āsamānamūha ō yamīnēra sarbamaẏa kartr̥tba yām̐ra; āra āllāh sabakichura pratyakṣadarśī"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Niścaẏa yārā mumina nara-nārīkē bipadāpanna karēchē [1] tārapara tā'ōbā karēni [2] tādēra jan'ya āchē jāhānnāmēra śāsti, āra tādēra jan'ya āchē dahana yantraṇā"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Niścaẏa yārā īmāna ēnēchē ēbaṁ saṯkāja karēchē tādēra jan'ya raẏēchē jānnāta, yāra pādadēśē nadī prabāhita; ēṭā'i mahāsāphalya"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Niścaẏa āpanāra rabēra pākaṛā'ō baṛa'i kaṭhina"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Tini'i astitba dāna karēna ō punarābartana ghaṭāna"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "ēbaṁ tini kṣamāśīla, atisnēhamaẏa"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "āraśēra adhikārī ō sam'mānita"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Tini yā icchē tā-i karēna"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Āpanāra kāchē ki paum̐chēchē sain'yabāhinīra br̥ttānta"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "phira‘ā'una ō sāmūdēra"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "tabu kāphirarā mithyārōpa karāẏa rata"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Āra āllāh sabadika thēkē tādērakē paribēṣṭana karē raẏēchēna"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Bastuta ēṭā sam'mānita kura'āna"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "sanrakṣita phalakē lipibad'dha"
        }
    ]
}