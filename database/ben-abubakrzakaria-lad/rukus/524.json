{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Yakhana āsamāna bidīrṇa habē"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "āra yakhana nakṣatramaṇḍalī bikṣiptabhābē jharē parabē"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "āra yakhana sāgaragulō bisphōrita karā habē"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "āra yakhana kabarasamūha unmōcita habē"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "takhana pratyēkē jānabē, sē kī āgē pāṭhiẏēchē ō kī pichanē rēkhē giẏēchē"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Hē mānuṣa! Kisē tōmākē tōmāra mahāna raba samparkē bibhraānta karala"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Yini tōmākē sr̥ṣṭi karēchēna, ataḥpara tōmākē suṭhāma karēchēna ēbaṁ susāmañjasya karēchēna"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "yē ākr̥titē cēẏēchēna, tini tōmākē gaṭhana karēchēna"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Kakhanō naẏa, tōmarā tō pratidāna dibasē mithyārōpa karē thāka"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "āra niścaẏa niẏōjita āchēna tōmādēra upara sanrakṣakadala"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "sam'mānita lēkhakabr̥nda"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "tārā jānē tōmarā yā kara"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Puṇyabānērā tō thākabē parama sbācchandyō"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "āra pāpācārīrā tō thākabē jāhānnāmē"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "tārā pratidāna dibasē tātē dagdha habē"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "āra tārā sēkhāna thēkē antarhita hatē pārabē nā"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Āra kisē āpanākē jānābē: Pratidāna dibasa kī"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "tārapara bali, kisē āpanākē jānābē: Pratidāna dibasa kī"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "sēdina kē'u kāra'ō jan'ya kichu karāra mālika habē nā; āra sēdina saba biṣaẏēra kartr̥tba habē āllāhara"
        }
    ]
}