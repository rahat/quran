{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "پیغمبر چین بجیں ہوئے اور منہ موڑ لیا"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "کہ ان کے پاس ایک اندھا آیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "اور آپ کو کیا معلوم کہ شاید وہ پاک ہوجائے"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا وہ نصیحت پکڑ لے تو اس کو نصیحت نفع دے"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "لیکن وہ جو پروا نہیں کرتا"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "سو آپ کے لیے توجہ کرتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حالانکہ آپ پر اس کےنہ سدھرنے کا کوئی الزام نہیں"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اور لیکن جو آپ کے پاس دوڑتا ہوا آیا"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور وہ ڈر رہا ہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو آپ اس سے بے پروائی کرتے ہیں"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "ایسا نہیں چاہیئے بے شک یہ تو ایک نصیحت ہے"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس جو چاہے اس کو یاد کرے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "وہ عزت والے صحیفوں میں ہے"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "جو بلند مرتبہ اور پاک ہیں"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ان لکھنے والوں کے ہاتھوں میں"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "جو بڑے بزرگ نیکو کار ہیں"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "انسان پر خدا کی مار وہ کیسا ناشکرا ہے"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "اس نے کس چیز سے اس کو بنایا"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "ایک بوند سے اس کوبنایا پھر اس کا اندزہ ٹھیرایا"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھراس پر راستہ آسان کر دیا"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اس کو موت دی پھر اس کو قبر میں رکھوایا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہے گا اٹھا کر کھڑا کرے گا"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ایسا نہیں چاہیئے اس نے تعمیل نہیں کی جو اس کو حکم دیا تھا"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس انسان کو اپنے کھانے کی طرف غور کرنا چاہیئے"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "کہ ہم نے اوپر سے مینہ برسایا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر ہم نے زمین کو چیر کر پھاڑا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر ہم نے اس میں اناج ا گایا"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اورانگور اور ترکاریاں"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجور"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گھنے باغ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور میوے اور گھاس"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تمہارے لیے اور تمہارے چار پایوں کے لیے سامان حیات"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پھر جس وقت کانوں کا بہرا کرنے والا شور برپا ہوگا"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "جس دن آدمی اپنے بھائی سے بھاگے گا"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور اپنی ماں اور باپ سے"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور اپنی بیوی اوراپنے بیٹوں سے"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "ہر شخص کی ایسی حالت ہوگی جو اس کو اوروں کی طرف سے بے پروا کر دے گی"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "اورکچھ چہرے اس دن چمک رہے ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ہنستے ہوئے خوش و خرم"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور کچھ چہرے اس دن ایسے ہوں گے کہ ان پر گرد پڑی ہو گی"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ان پر سیاہی چھا رہی ہو گی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "یہی لوگ ہیں منکر نافرمان"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج کی روشنی لپیٹی جائے"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "اور جب ستارے گر جائیں"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب دس مہینے کی گابھن اونٹنیاں چھوڑ دی جائیں"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب جنگلی جانور اکھٹے ہوجائیں"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب سمندر جوش دیئے جائیں"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب جانیں جسموں سے ملائی جائیں"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زندہ درگور لڑکی سے پوچھا جائے"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ کس گناہ پر ماری گئی تھی"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب اعمال نامے کھل جائیں"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور آسمان کا پوست اتارا جائے"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اورجب دوزخ دھکائی جائے"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اورجب جنت قریب لائی جائے"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تو ہر شخص جان لے گا کہ وہ کیا لے کر آیا ہے"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس میں قسم کھاتا ہوں پیچھے ہٹنے والے"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "سیدھے چلنے والے غیب ہو جانے والے ستارو ں کی"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور قسم ہے رات کی جب وہ جانے لگے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور قسم ہے صبح کی جب وہ آنے لگے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "بے شک یہ قرآن ایک معزز رسول کا لایا ہوا ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو بڑا طاقتور ہے عرش کے مالک کے نزدیک بڑے رتبہ والا ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "وہاں کا سردار امانت دار ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور تمہارا رفیق کوئی دیوانہ نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اور اس نے اس کو کُھلے کنارے پر دیکھا بھی ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور وہ غیب کی باتوں پر بخیل نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور وہ کسی شیطان مردود کا قول نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس تم کہاں چلے جا رہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو جہان بھرکے لیے نصیحت ہی نصیحت ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "اس کے لیے جو تم میں سے سیدھا چلنا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم توجب ہی چاہو گے کہ جب الله چاہے گا جو تمام جہان کا رب ہے"
        }
    ]
}