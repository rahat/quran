{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "اپنے رب کے نام کی تسبیح کیا کر جو سب سے اعلیٰ ہے"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "وہ جس نے پیدا کیا پھر ٹھیک بنایا"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "اور جس نے اندازہ ٹھہرایا پھر راہ دکھائی"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "اور وہ جس نے چارہ نکالا"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پھر اس کو خشک چورا سیاہ کر دیا"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "البتہ ہم آپ کو پڑھائیں گے پھر آپ نہ بھولیں گے"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر جو الله چاہے بے شک وہ ہرظاہر اور چھپی بات کو جانتا ہے"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "اور ہم آپ کو آسان شریعت کے سمجھنے کی توفیق دیں گے"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس آپ نصیحت کیجیئے اگر نصیحت فائدہ دے"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "جو الله سے ڈرتا ہے وہ جلدی سمجھ جائے گا"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "اور اس سے بڑا بدنصیب الگ رہے گا"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "جو سخت آگ میں داخل ہوگا"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "پھر اس میں نہ تو مرے گا اور نہ جیئے گا"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "بے شک وہ کامیاب ہوا جو پاک ہو گیا"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "اور اپنے رب کا نام یاد کیا پھر نماز پڑھی"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلکہ تم تودنیا کی زندگی کو ترجیح دیتے ہو"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "حالانکہ آخرت بہتر اور زیادہ پائدار ہے"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "بے شک یہی پہلے صحیفوں میں ہے"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "(یعنی) ابراھیم اور موسیٰ کے صحیفوں میں"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "کیا آپ کے پاس سب پرچھا جانے والی (قیامت) کا حال پہنچا"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "کئی چہرو ں پر اس دن ذلت برس رہی ہوگی"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "محنت کرنے والے تھکنے والے"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "دھکتی ہوئی آگ میں کریں گے"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "انہیں ابلتے ہوئے چشمے سے پلایا جائے گا"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "ان کے لیے کوئی کھانا سوائے کانٹے دار جھاڑی کے نہ ہوگا"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "جو نہ فربہ کرتی ہے اور نہ بھوک کود ور کرتی ہے"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "کئی منہ اس دن ہشاش بشاش ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "اپنی کوشش سے خوش ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "اونچے باغ میں ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "وہاں کوئی لغو بات نہیں سنیں گے"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "وہاں ایک چشمہ جاری ہوگا"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "وہاں اونچے اونچے تخت ہوں گے"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "اور آبخورے سامنے چنے ہوئے"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "اورگاؤ تکیے قطار سے لگے ہوئے"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "اور مخملی فرش بچھے ہوئے"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "پھر کیا وہ اونٹوں کی طرف نہیں دیکھتے کہ کیسے بنائے گئے ہیں"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "اور آسمان کی طرف کہ کیسے بلند کیے گئے ہیں"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "اور پہاڑوں کی طرف کہ کیسے کھڑے کیے گئے ہیں"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "اور زمین کی طرف کہ کیسے بچھائی گئی ہے"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس آپ نصیحت کیجئے بے شک آپ تو نصیحت کرنے والے ہیں"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "آپ ان پر کوئی داروغہ نہیں ہیں"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر جس نے منہ موڑا اورانکار کیا"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "سو اسے الله بہت بڑا عذاب دے گا"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "بےشک ہماری طرف ہی ان کو لوٹ کر آنا ہے"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "پھر ہمارےہی ذمہ ان کا حساب لینا ہے"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "فجر کی قسم ہے"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "اور دس راتوں کی"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "اور جفت اور طاق کی"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "اور رات کی جب وہ گزر جائے"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "ان چیزو ں کی قسم عقلمندوں کے واسطے معتبر ہے"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "کیا آپ نے نہیں دیکھا کہ آپ کے رب نے عاد کے ساتھ کیا سلوک کیا"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "جو نسل ارم سے ستونوں والے تھے"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "کہ ان جیسا شہرو ں میں پیدا نہیں کیا گیا"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "اور ثمود کے ساتھ جنہوں نے پتھروں کو وادی میں تراشا تھا"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "اور فرعون میخوں والوں کے ساتھ"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "ان سب نے ملک میں سرکشی کی"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "پھر انہوں نے بہت فساد پھیلایا"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "پھر ان پر تیرے رب نے عذاب کا کوڑا پھینکا"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "بے شک آپ کا رب تاک میں ہے"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "لیکن انسان تو ایسا ہے کہ جب اسے اس کا رب آزماتا ہے پھر اسے عزت اور نعمت دیتا ہے تو کہتا ہے کہ میرے رب نے مجھے عزت بخشی ہے"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "لیکن جب اسے آزماتا ہے پھر اس پر اس کی روزی تنگ کر تا ہے تو کہتا ہے میرے رب نے مجھے ذلیل کر دیا"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "ہرگز نہیں بلکہ تم یتیم کی عزت نہیں کرتے"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "اور نہ مسکین کو کھانا کھلانے کی ترغیب دیتے ہو"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "اور میت کا ترکہ سب سمیٹ کر کھا جاتے ہو"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "اور مال سے بہت زیادہ محبت رکھتے ہو"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "ہرگز نہیں جب زمین کوٹ کوٹ کر ریزہ ریزہ کر دی جائے گی"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "اور آپ کے رب کا (تخت) آجائے گا اور فرشتے بھی صف بستہ چلے آئيں گے"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "اوراس دن دوزخ لائی جائے گی اس دن انسان سمجھے گا اور اس وقت اس کو سمجھنا کیا فائدہ دے گا"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "کہے گا اے کاش میں اپنی زندگی کے لیے کچھ آگے بھیجتا"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس اس دن اس کا ساعذاب کوئی بھی نہ دے گا"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "اور نہ اس کے جکڑنے کے برابر کوئی جکڑنے والا ہو گا"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "(ارشاد ہوگا) اے اطمینان والی روح"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "اپنے رب کی طرف لوٹ چل تو اس سے راضی وہ تجھ سے راضی"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "پس میرے بندو ں میں شامل ہو"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "اور میری جنت میں داخل ہو"
        }
    ]
}