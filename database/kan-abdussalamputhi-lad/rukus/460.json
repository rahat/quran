{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "hāgeyē, iruḷallū, nakṣatragaḷu kaṇmareyāguva vēḷeyū nīvu avana pāvitravannu japisiri"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "nakṣatravu kaṇmareyāguva samayada āṇe"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "nim'ma saṅgāti (dūtaru) dāritappilla mattu avaru tappu dāriyalli naḍeyuttilla"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "avaru tam'ma apēkṣeyinda mātanāḍuvudilla"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "idu, (kur‌ān) – avarige nīḍalāgiruva divya sandēśavallade bērēnalla"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "idannu avarige śaktiśāliyāgiruvavanu (malak) kalisi koṭṭiruvanu"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "avanu tumbā baliṣṭhanu. Avanu (nijarūpadalli) munde bandanu"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "avanu bānina ettarada an̄cinalliddanu"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "matte avanu hattira bandanu mattu innaṣṭu nikaṭanādanu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "konege avanu billina eraḍu tudigaḷaṣṭu athavā adakkinta kaḍime antaradalliddanu"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "ābaḷika, avanu (allāhanu) tanna dāsanige nīḍabēkāda sandēśavannu nīḍidanu"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "tānu kaṇḍaddu suḷḷendu avara (dūtara) manas'su hēḷalilla"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "nīvīga, avaru kaṇḍaddara kuritu avaroḍane jagaḷāḍuvirā"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "avaru ātanannu eraḍanē bāriyū kaṇḍaru"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "‘sidratul mun‌tahā’da baḷi"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "adara baḷiyē ide, svargada viśrānti nilaya"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "sidraḥvannu ēnu āvarisitō adu āvarisidāga"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "dr̥ṣṭiyu eḍavalū illa, mitimīralū illa"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "khacitavāgi avaru tam'ma oḍeyana kelavu doḍḍa pramāṇagaḷannu kaṇḍaru"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "nīvu kaṇḍirā ‘lāt’ hāgū ‘ujhjhā’ gaḷannu"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "mattu ‘manāt’ emba mūraneyadondannu"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "nimage putraru mattu avanige putriyarē"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Idu tīrā asamarpaka vitaraṇeyāgide"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "nijavāgi avellā kēvala nīvu mattu nim'ma pūrvajaru iṭṭu biṭṭiruva kelavu hesarugaḷu mātra. Adara paravāgi allāhanu yāva purāveyannū iḷisi koṭṭilla. Avaru kēvala tam'ma ūheyannu hāgū svēccheyannu mātravē anusarisuttiddāre. Idīga avara baḷige avara oḍeyana kaḍeyinda mārgadarśanavu bandide"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "manuṣyanigēnu, avanu bayasiddellavū sikki biḍuttadeyē"
        }
    ]
}