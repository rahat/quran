{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "hoddukoṇḍiruvavarē"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "eddēḷiri mattu eccarisiri"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "nim'ma oḍeyana hirimeyannu koṇḍāḍiri"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "nim'ma vastragaḷannu śuciyāgiḍi"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "mālin'yagaḷinda dūra uḷiyiri"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "(upakr̥taninda) heccinadannu paḍeyalikkāgi upakāra māḍabēḍiri"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "nim'moḍeyanigāgi sahanaśīlarāgiri"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "(lōkāntyada) kahaḷeyannu ūdalādāga"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "ā dinavu bahaḷa kaṭhiṇa dinavāgiruvudu"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "dhikkārigaḷa pālige adu sulabhavāgiralāradu"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "biṭṭu biḍiri, nannannu mattu nānu sr̥ṣṭisuvāga oṇṭiyāgiddātanannu"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "(munde) nānu avanige dhārāḷa sampattannu nīḍidenu"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "mattu sadā avana jotegiruva putrarannu nīḍidenu"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "Mattu avanige ella bageya sādhanagaḷannu odagisidenu"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "ādare avanu, nānu mattaṣṭu nīḍabēkendu āse paḍuttiddāne"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "hāgāgadu; avanu nam'ma vacanagaḷa śatruvāgiruvanu"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "nānu avanannu (narakada) durgama beṭṭavannu hattisaliruvenu"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "avanu yōcisidanu mattu nirdharisikoṇḍanu"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "nāśavāgali avanu, entaha nirdhāra avanadu"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "matte, nāśavāgali avanu, entaha nirdhāra avanadu"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "matte avanu nōḍidanu"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "matte avanu hubbērisi mukha tirucikoṇḍanu"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "matte avanu tirugi nintanu mattu ahaṅkāra tōridanu"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "matte avanu hēḷidanu; ‘‘idu paramparāgata māṭagārikeyē horatu bērēnalla’’"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "‘‘idu kēvala manuṣyana mātē horatu bērēnalla’’"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "nāvu avanannu ‘sakar’ge (narakakke) esayaliruvevu"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "sakar ēnendu nimagēnu gottu"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "adu uḷiyalū biḍadu aḷiyalū biḍadu"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "adu manuṣyanannu suṭṭu karragāgisuvudu"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "adara mēle hattombhattu mandi (kāvalugāraru) iruvaru"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "nāvu malak‌gaḷannē narakada kāvalugārarāgisiruvevu mattu avara saṅkhyeyannu dhikkārigaḷa pālige parīkṣeyāgisiruvevu – granthadavaru nambalendu hāgū viśvāsigaḷa viśvāsavu heccalendu mattu granthadavarāgali viśvāsigaḷāgali sanśayakke tuttāgabāradendu mattu manas'sinalli rōgaviruvavaru hāgū dhikkārigaḷu ‘‘ī udāharaṇeya mūlaka allāhanu bayasuvudēnannu?’’ Endu kēḷalendu. Ī rīti allāhanu tānicchisidavarannu dārigeḍisuttāne. Hāgū tānicchisidavarige saridāriyannu tōruttāne. Nim'ma oḍeyana paḍegaḷa kuritu avana horatu bēre yārigū tiḷiyadu. Idu mānavarigāgiruva upadēśa mātravāgide"
        }
    ]
}