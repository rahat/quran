{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "avaru hēḷuttiruvudannellā nāvu cennāgi ballevu. Nīvu avarannu balavanta paḍisuvavaralla. Nanna munneccarikeyannu an̄juvavarige nīvu kur‌ānina mūlaka upadēśisiri"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "dhūḷebbisuva suḷigāḷigaḷāṇe"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "avu (mōḍagaḷa) horeyannu hottiruttave"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "taruvāya avu, saumyavāgi calisatoḍaguttave"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "mattu ādēśānusāra (maḷeyannu) vitarisuttave"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "nimage nīḍalāgiruva vāgdānavu khaṇḍita satyavāgide"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "pratiphalada dinavu khaṇḍita baralide"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "dārigaḷiruva ākāśadāṇe"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "nīvu vividha vādagaḷalli tallīnarāgiruviri"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Dūragoḷisalpaṭṭavanu mātra idarinda (satyadinda) dūravāguttāne"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "nāśavādaru, ūhāpōhagaḷannu necci koṇḍavaru"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "avaru eccaravillade, mai mareta sthitiyalliddāre"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "pratiphalada dina yāvāga bandītendu avaru kēḷuttāre"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "andu avaru beṅkiya mēle horaḷāḍisalpaḍuvaru"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "(avaroḍane hēḷalāguvudu;) saviyiri nim'ma kiḍigēḍitanavannu, nīvu ātura paḍuttidda vastu iduvē"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "khaṇḍita (svargada) tōṭagaḷalli hāgū cilumegaḷalliruvaru"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "tam'ma oḍeyanu nīḍiddannu svīkarisuttiruvaru. Ī hinde (ihalōkadalli) avaru satkarmigaḷāgiddaru"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "avaru rātriyalli tusu hottu mātra nidrisuttiddaru"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "mun̄jāvinalli avaru (allāhanoḍane) kṣameyācisuttiddaru"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "avara sampattinalli, bēḍuvavarige hāgū van̄citarige hakkittu"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "acala nambike uḷḷavarige bhūmiyalli (pāṭhadāyaka) purāvegaḷive"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "mattu nīvēnu svataḥ nim'mannē nōḍuvudillavē"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "mattu ākāśadalli nim'ma āhāravide mattu nimage vāgdāna māḍalāgiruva vastuvū ide"
        }
    ]
}