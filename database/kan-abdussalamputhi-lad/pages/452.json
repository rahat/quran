{
    "pages": [
        {
            "chapter": 37,
            "verse": 154,
            "text": "nīvu pāṭha kaliyuvudillavē"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "athavā nim'ma baḷi spaṣṭa purāveyēnādarū ideyē"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "nīvu satyavantarāgiddare tanniri, nim'ma granthavannu"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "avaru avana (allāhana) hāgū jinn‌gaḷa naḍuve sambandha kalpisuttāre. Tam'mannu (narakadeduru) hājarugoḷisalāguvudendu (dhikkāri) jinn‌gaḷige khaṇḍita tiḷidide"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "allāhanu avara ella ārōpagaḷinda muktanāgiddāne"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "allāhanu āydukoṇḍa dāsaru mātra bhinnarāgiruttāre"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "khaṇḍitavāgiyū nīvu mattu nīvu pūjisuva vastugaḷu –"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "avana (allāhana) viṣayadalli yārannū mōsagoḷisuvantilla –"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "narakakke hōguvavanendu vidhisalpaṭṭavana horatu"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "(malak‌gaḷu hēḷuttāre:) ‘‘Nam'malli pratiyobbarigū ondu sthānavu niścitavāgide"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "mattu nāvu (allāhana mande) sālugaṭṭi nintiruttēve"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "mattu nāvu khaṇḍita (allāhana) pāvitravannu japisuttiruttēve‘‘"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "ī hinde avaru (dhikkārigaḷu) hēḷuttiddaru"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "‘‘nam'ma baḷi gata kāladavara bōdhanegaḷu (divya grantha) iddiddare"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "nāvu khaṇḍita āyda dāsara sālige sēriruttiddevu’’"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "ādare (divya granthavu bandāga) avaru adannu dhikkarisidaru. Idīga adara pariṇāmavu avarige tiḷiyalide"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "dūtarāgiruva nam'ma dāsara viṣayadalli nam'ma hēḷikeyu īgāgalē vidhitavāgide"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "(adēnendare), avarige khaṇḍita sahāya sigalide"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "Mattu khaṇḍitavāgiyū nam'ma paḍegaḷē gelluvavu"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "(dūtarē,) sadya, ondu nirdiṣṭa kālada tanaka nīvu avarannu (dhikkārigaḷannu) kaḍegaṇisiri"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "mattu nīvu avarannu nōḍuttaliri. Avaru śīghravē (tam'ma gatiyannu) kāṇuvaru"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "avarēnu, nam'ma śikṣegāgi ātura paḍuttiddāreyē"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "adu avara aṅgaḷakke bandiḷidāga, īgāgale eccarisalpaṭṭavara pālige adu bahaḷa keṭṭa mun̄jāneyāgiruvudu"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "sadya, ondu nirdiṣṭa kālada tanaka nīvu avarannu kaḍegaṇisiri"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "mattu nīvu avarannu nōḍuttaliri. Avaru śīghravē (tam'ma gatiyannu) kāṇuvaru"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "nim'ma pāvana (gauravānvita) oḍeyanu, avaru horisuva ella ārōpagaḷinda sampūrṇa muktanāgiddāne"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "dūtarige śānti sigali"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "mattu ella praśansegaḷu sarvalōkagaḷa oḍeyanāda allāhanige mīsalu"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "svād. Upadēśa tumbiruva kur‌ānināṇe"
        }
    ]
}