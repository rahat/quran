{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "وه ترش رو ہوا اور منھ موڑ لیا"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "(صرف اس لئے) کہ اس کے پاس ایک نابینا آیا"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "تجھے کیا خبر شاید وه سنور جاتا"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا نصیحت سنتا اور اسے نصیحت فائده پہنچاتی"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "جو بے پرواہی کرتا ہے"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "اس کی طرف تو تو پوری توجہ کرتا ہے"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حاﻻنکہ اس کے نہ سنورنے سے تجھ پر کوئی الزام نہیں"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اور جو شخص تیرے پاس دوڑتا ہوا آتا ہے"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "اور وه ڈر (بھی) رہا ہے"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو اس سے بےرخی برتتا ہے"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "یہ ٹھیک نہیں قرآن تو نصیحت (کی چیز) ہے"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "جو چاہے اس سے نصیحت لے"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(یہ تو) پر عظمت صحیفوں میں (ہے)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "جو بلند وباﻻ اور پاک صاف ہے"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ایسے لکھنے والوں کے ہاتھوں میں ہے"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "جو بزرگ اور پاکباز ہے"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "اللہ کی مار انسان پر کیسا ناشکرا ہے"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "اسے اللہ نے کس چیز سے پیدا کیا"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "(اسے) ایک نطفہ سے، پھر اندازه پر رکھا اس کو"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "پھر اس کے لئے راستہ آسان کیا"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "پھر اسے موت دی اور پھر قبر میں دفن کیا"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "پھر جب چاہے گا اسے زنده کر دے گا"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ہرگز نہیں۔ اس نے اب تک اللہ کے حکم کی بجا آوری نہیں کی"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "انسان کو چاہئے کہ اپنے کھانے کو دیکھے"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "کہ ہم نے خوب پانی برسایا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "پھر پھاڑا زمین کو اچھی طرح"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پھر اس میں سے اناج اگائے"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "اور انگور اور ترکاری"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "اور زیتون اور کھجور"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "اور گنجان باغات"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "اور میوه اور (گھاس) چاره (بھی اگایا)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تمہارے استعمال وفائدے کے لئے اور تمہارے چوپایوں کے لئے"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس جب کہ کان بہرے کر دینے والی (قیامت) آجائے گی"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "اس دن آدمی اپنے بھائی سے"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "اور اپنی ماں اور اپنے باپ سے"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "اور اپنی بیوی اور اپنی اوﻻد سے بھاگے گا"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "ان میں سے ہر ایک کو اس دن ایسی فکر (دامنگیر) ہوگی جو اس کے لئے کافی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "اس دن بہت سے چہرے روشن ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "(جو) ہنستے ہوئے اور ہشاش بشاش ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "اور بہت سے چہرے اس دن غبار آلود ہوں گے"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "جن پر سیاہی چڑھی ہوئی ہوگی"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "وه یہی کافر بدکردار لوگ ہوں گے"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "جب سورج لپیٹ لیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "اور جب ستارے بے نور ہو جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "اور جب پہاڑ چلائے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "اور جب دس ماه کی حاملہ اونٹنیاں چھوڑ دی جائیں"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "اور جب وحشی جانور اکھٹے کیے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "اور جب سمندر بھڑکائے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "اور جب جانیں (جسموں سے) ملا دی جائیں گی"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "اور جب زنده گاڑی ہوئی لڑکی سے سوال کیا جائے گا"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "کہ کس گناه کی وجہ سے وه قتل کی گئی؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "اور جب نامہٴ اعمال کھول دیئے جائیں گے"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "اور جب آسمان کی کھال اتار لی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "اور جب جہنم بھڑکائی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "اور جب جنت نزدیک کر دی جائے گی"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "تو اس دن ہر شخص جان لے گا جو کچھ لے کر آیا ہوگا"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "میں قسم کھاتا ہوں پیچھے ہٹنے والے"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "چلنے پھرنے والے چھپنے والے ستاروں کی"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "اور رات کی جب جانے لگے"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "اور صبح کی جب چمکنے لگے"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "یقیناً یہ ایک بزرگ رسول کا کہا ہوا ہے"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "جو قوت واﻻ ہے، عرش والے (اللہ) کے نزدیک بلند مرتبہ ہے"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "جس کی (آسمانوں میں) اطاعت کی جاتی ہے امین ہے"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "اور تمہارا ساتھی دیوانہ نہیں ہے"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "اس نے اس (فرشتے) کو آسمان کے کھلے کنارے پر دیکھا بھی ہے"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "اور یہ غیب کی باتوں کو بتلانے میں بخیل بھی نہیں"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "اور یہ قرآن شیطان مردود کا کلام نہیں"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پھر تم کہاں جا رہے ہو"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "یہ تو تمام جہان والوں کے لئے نصیحت نامہ ہے"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(بالخصوص) اس کے لئے جو تم میں سے سیدھی راه پر چلنا چاہے"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "اور تم بغیر پروردگار عالم کے چاہے کچھ نہیں چاه سکتے"
        }
    ]
}