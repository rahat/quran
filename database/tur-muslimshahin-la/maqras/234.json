{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber), oturu yuzunu eksitti ve geri dondu"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "amanın kendisine gelmesinden"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "(Rasulum! Onun halini) sana kim bildirdi! Belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "yahut ogut alacak da o ogut ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini (sana) muhtac gormeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sen ona yoneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa ki onun temizlenip arınmasından sen sorumlu degilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat kosarak ve sana gelenle de"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "(Allah'tan) korkarak"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır, suphesiz bunlar (ayetler ), bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen ondan ( Kur'an'dan ) ogut alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Tertemiz kılınmıs mukaddes sahifelerde (yazılı)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yuce makamlara kaldırılmıs"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "katiplerin elleriyle ( yazılıp)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "degerli ve itaatkar meleklerin"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan! Ne inkarcıdır"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah onu neden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden (spermadan) yarattı da ona sekil verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylastırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onun canını aldı ve kabre soktu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra diledigi bir vakitte onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır! (Insan) Allah'ın emrettigini yapmadı"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Insan, yedigine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Soyle ki: Yagmurlar yagdırdık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra topragı goz goz yardık da"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "oradan ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzum bagları, sebzeler"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytin ve hurma agacları"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "iri ve sık agaclı bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyveler ve cayırlar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(Butun bunlar) sizi ve hayvanlarınızı yararlandırmak icindir"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sagır eden o ses geldiginde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Iste o gun kisi kardesinden kacar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "esinden ve cocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun, herkesin kendine yetip artacak bir derdi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gun bir takım yuzler parlak"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "gulec ve sevinclidir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yine o gun birtakım yuzleri de keder burumus"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "huzunden kapkara kesilmistir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste bunlar kafirlerdir, gunahkarlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes katlanıp duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar (kararıp) dokuldugunde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar (sallanıp) yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiginde"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar toplanıp bir araya getirildiginde"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgında"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar (bedenlerle) birlestirildiginde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gomulen kıza, soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hangi gunah sebebiyle olduruldugu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amellerin yazılı oldugu) defterler acıldıgında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gokyuzu sıyrılıp alındıgında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "cehennem tutusturuldugunda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ve cennet yaklastırıldıgında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kisi neler getirdigini ogrenmis olacaktır"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! (Gunduz) sinen"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "akıp giden, etrafı aydınlatan yıldızlara andolsun"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya yuz tuttugunda geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Agarmaya basladıgında sabaha andolsun ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "itibarlı bir elcinin (Cebrail'in) getirdigi sozdur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O (Kur'an), suphesiz degerli, guclu ve Ars'ın sahibi (Allah'ın) katında"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O orada sayılan, guvenilen (elci)'dir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız (Muhammed) de mecnun degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki, onu (Cebrail'i) apacık ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gaybın bilgilerini (sizden) esirgemez"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O lanetlenmis seytanın sozu de degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal boyle iken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, herkes icin, bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dogru yolda gitmek isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}