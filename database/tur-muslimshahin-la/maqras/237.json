{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin adını tesbih (ve takdis) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp duzene koyan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "takdir edip yol gosteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "(topraktan) yesil otu cıkarıp"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu kapkara bir sel artıgına ceviren"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı) okutacagız; sen hic unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Artık Allah'ın diledigi haric, suphesiz Allah, acıgı ve gizleneni bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolaya muvaffak kılacagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eger ogut fayda verirse ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) korkan ogutten yararlanacak"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kotu kimse ise ogutten kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "En buyuk atese girecek olan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra o, ateste ne olur ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Temizlenen, kimse kuskusuz kurtulusa ermistir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp O'na kulluk eden"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz (ey insanlar!) dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret daha hayırlı ve daha devamlı oldugu halde"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz bu (anlatılanlar), onceki kitaplarda"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim ve Musa'nın kitaplarında da vardır"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Rasulum!) Dehseti her seyi kaplayan kıyametin haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun birtakım yuzler zelildir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "durmadan calısır, (fakat bosuna) yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "kızgın atese girer"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Onlara kaynar su pınarından icirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru dikenden baska yemek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "o ise ne besler ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun bir takım yuzler de vardır ki, mutludurlar"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "(dunyadaki) cabalarından hosnut olmuslardır"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "yuce bir cennettedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos bir soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada (cennette) devamlı akan bir pınar"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "orada yukseltilmis tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "sıra sıra dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "serilmis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "(Insanlar) devenin nasıl yaratıldıgına, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Gogun nasıl yukseltildigine, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dagların nasıl dikildigine, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yeryuzunun nasıl yayıldıgına bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "O halde (Rasulum!) ogut ver. Sen ancak ogut vericisin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerinde bir zorba degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak yuz cevirip inkar edene gelince"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "iste oylesini Allah en buyuk azap ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusu sadece bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların sorguya cekilmesi de sadece bize aittir"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Fecre yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "on geceye (haccın on gecesine), yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "cifte ve teke, yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "(her seyi karanlıgı) ile orttugu an geceye yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "bunlarda akıl sahibi icin elbette birer yemin (degeri) vardır"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Gormedin mi, Rabbin ne yaptı Ad kavmine"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "direkleri (yuksek binaları) olan"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "ulkelerde benzeri yaratılmamıs Irem sehrine"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "o vadide kayaları yontan Semud kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "kazıklar (cadırlar, ordular) sahibi Firavun'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Ki onların hepsi ulkelerinde azgınlık ettiler"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda kotulugu cogalttılar"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yuzden Rabbin onların ustune azap kamcısı yagdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Cunku Rabbin (her an) gozetlemededir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Fakat insan, Rabbi kendisini imtihan edip de ikramda bulundugunda ve bol nimet verdiginde «Rabbim bana ikram etti» der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Onu imtihan edip rızkını daralttıgında ise «Rabbim beni onemsemedi» der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır! Dogrusu siz yetime ikram etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "yoksulu yedirmeye birbirinizi tesvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Haram helal demeden mirası yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı asırı bicimde seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ama yeryuzu parca parca dokuldugu"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin geldigi ve melekler saf saf dizildigi zaman (her sey ortaya cıkacaktır)"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "O gun cehennem getirilir, insan yaptıklarını birer birer hatırlar. Fakat bu hatırlamanın ne faydası var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "(Iste o zaman insan:) «Keske bu hayatım icin bir seyler yapıp gonderseydim!» der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Artık o gun, Allah'ın edecegi azabı kimse edemez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O'nun vuracagı bagı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura kavusmus insan"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Sen O'ndan hosnut, O da senden hosnut olarak Rabbine don"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "(Seckin) kullarım arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "ve cennetime gir"
        }
    ]
}