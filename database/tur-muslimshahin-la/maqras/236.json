{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine kulak verip boyun egecek hale getirildigi"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dumduz edildigi vakit"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "icinde bulunanları atıp bosaldıgı vakit"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "ve Rabbini dinleyip O'na hakkıyla itaata mecbur kılındıgı vakit (insanoglu yaptıkları ile karsılasır)"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Suphe yok ki sen Rabbine karsı caba ustune caba gostermektesin; sonunda O'na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "kolay bir hesapla hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "derhal yok olmayı isteyecek"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "alevli atese girecek"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Zira o, (dunyada) ailesi icinde (mal mulk sebebiyle) sımarmıstı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O hicbir zaman Rabbine donmeyecegini sandı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Oysa gercekten Rabbi onu goruyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Hayır! Safaga, yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "geceye ve onda basan karanlıga, yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "dolunay olmus aya yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "halden hale gecersiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Boyleyken onlar acaba neden iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlar kendilerine Kur'an okununca secde de etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, kafirler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah onların gizledigi seyleri cok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "(Rasulum!) Onlara acı azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Iman edip salih amel isleyenler baskadır; onlar icin arkası kesilmeyen bir mukafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burclara sahip gokyuzune, andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "gelecegi bildirilmis olan gune, andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(o gunde) tanıklık edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "hendege atılanlar olduruldu"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Atesle dolu (yakılarak)"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar (yakanlar) da baslarına oturmuslar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "muminlere yapmakta oldukları iskenceyi seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Aziz ve Hamid olan Allah'a iman ettikleri icin intikam aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Onlardan, sırf, goklerin ve yerin mulku kendisine ait olan, oysa ki Allah her seyi gorur"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Mumin erkeklere ve mumin kadınlara, dinden dondurmek icin iskence edip sonra da tovbe etmeyenlere cehennem azabı ve (orada) yanma cezası vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Iman edip salih ameller isleyenlere ise, zemininden ırmaklar akan cennetler vardır. Iste buyuk kurtulus budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Suphesiz Rabbinin yakalaması cok siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Bilin ki O, (kainat yokken) ilk olarak yaratan, (olumden sonra tekrar hayatı) geri getirendir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, cok bagıslayan ve cok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Serefli Ars'ın sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigi seyleri mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların, haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud'un (ugradıkları felaketin)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Dogrusu inkarcılar (gercegi) yalanlayıp dururlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arkalarından kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hakikatte o (yalanladıkları, aslı) serefli Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuzda bulunan"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Gokyuzune ve tarıka (sabah yıldızına ) yemin ederim"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarıkın ne oldugunu nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(O, karanlıgı) delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hic kimse yoktur ki uzerinde bir koruyucu, bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Insan neden yaratıldıgına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(O su) sırt ile gogus kafesi arasından cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Iste Allah (baslangıcta bu sekilde yarattıgı) insanı tekrar yaratmaya da kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlenenlerin ortaya dokuldugu gunde"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "insan icin ne bir guc ne de bir yardımcı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Donus sahibi olan (yagmur yagdıran) goge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(nebat ile) yarılan yere yemin ederim ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kur’an, (hak ile batılı) ayıran bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, asla bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kurarlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "ben de bir tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Kafirlere muhlet ver, onları biraz kendi hallerine bırak (pek yakında destegimiz sana gelecek)"
        }
    ]
}