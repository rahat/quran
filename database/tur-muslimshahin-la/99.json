{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yeryuzu kendine has sarsıntısıyla sallandıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "toprak agırlıklarını dısarı cıkardıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "ve insan «Ne oluyor buna!» dedigi vakit"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "iste o gun (yer) butun haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Rabbinin ona bildirmesiyle"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "o gun insanlar amellerini gormeleri (karsılıgını almaları) icin darmadagınık geri donup gelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre miktarı hayır yapmıssa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre miktarı ser islemisse onu gorur"
        }
    ]
}