{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Birisi, gelecek azabı istedi"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Inkarcılara olan ve hic kimsenin savamayacagı"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "yukselme derecelerinin sahibi olan Allah katından"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve Ruh (Cebrail), oraya, miktarı (dunya senesi ile) ellibin yıl olan bir gunde yukselip cıkar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "(Rasulum!) Simdi sen guzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Dogrusu onlar, o azabı (ihtimalden) uzak goruyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın gormekteyiz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gun gokyuzu, erimis maden gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Daglar da atılmıs yune doner"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost, dostu sormaz"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "Gunahkar kimse ister ki, o gunun azabından (kurtulus icin), ogullarını, hepsini fidye olarak versin de"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "karısını, kardesini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "kendisini koruyup barındıran"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "tum ailesini ve yeryuzunde kim varsa, tek kendini kurtarsın"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Fakat ne mumkun! Bilinmeli ki, o (cehennem) alevlenen bir atestir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Derileri kavurup soyar"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Yuz cevirip geri donen, kimseyi (kendine) cagırır"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "(servet) toplayıp yıgan"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Gercekten insan, pek hırslı (ve sabırsız) yaratılmıstır"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine fenalık dokundugunda sızlanır, feryat eder"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Ona imkan verildiginde ise pinti kesilir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak sunlar oyle degildir: Namaz kılanlar"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "ki onlar namazlarında devamlıdırlar (ihmal gostermezler)"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "mallarında, kalmısa belli bir hak tanıyanlar"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "isteyene ve (isteyemedigi icin) mahrum"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "ceza (ve hesap) gununun dogruluguna inananlar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rablerinin azabından korkanlar"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "ki Rablerinin azabı(na karsı) emin olunamaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "ırzlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "ancak eslerine ve cariyelerine karsı mustesna; cunku onlar kınanmaz"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Bundan oteye (gecmek) isteyenler ise, onlar taskınların ta kendileridir"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Emanetlerine ve ahitlerine riayet edenler"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Sahitliklerini (dosdogru) yapanlar"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "iste bunlar, cennetlerde agırlanırlar"
        }
    ]
}