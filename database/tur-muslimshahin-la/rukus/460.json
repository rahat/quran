{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Battıgı zaman yıldıza andolsun ki"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "arkadasınız (Muhammed) sapmadı ve batıla inanmadı"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "o, arzusuna gore de konusmaz"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "O, kendisine vahyedilen vahiyden baska bir sey degildir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Cunku onu guclu kuvvetli ve ustun yaratılıslı biri (Cebrail) ogretti"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "Asıl sekliyle dogruldu"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "Sonra en yuksek ufukta iken"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra (Muhammed'e) yaklastı, derken daha da yaklastı"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "O kadar ki (birlestirilmis) iki yay arası kadar, hatta daha da yakın oldu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "Bunun uzerine Allah, kuluna vahyini bildirdi"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "(Gozleriyle) gordugunu kalbi yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onun gordukleri hakkında simdi kendisi ile tartısacak mısınız"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Onceden bir defa daha gormustu"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "Andolsun onu, Sidretu’l Munteha'nın yanında"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "cennetu’l-me’va da onun yanındadır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "Sidre'yi kaplayan kaplamıstı"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Gozu kaymadı ve sınırı asmadı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Andolsun o, Rabbinin en buyuk ayetlerinden bir kısmını gordu"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gordunuz mu o Lat ve Uzza’yı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Ve ucunculeri olan otekini, Menat'ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Demek erkek size, disi O’na oyle mi"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "O zaman bu, insafsızca bir taksim"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Bunlar (putlar), sizin ve atalarınızın taktıgı isimlerden baska bir sey degildir. Allah onlar hakkında hicbir delil indirmemistir. Onlar ancak zanna ve nefislerinin arzusuna uyuyorlar. Halbuki kendilerine Rableri tarafından yol gosterici gelmistir"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Yoksa insan, her arzu ettigi seye sahip mi olacaktır"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Ahiret de dunya da Allah'ındır"
        }
    ]
}