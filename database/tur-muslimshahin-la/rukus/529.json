{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin adını tesbih (ve takdis) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp duzene koyan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "takdir edip yol gosteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "(topraktan) yesil otu cıkarıp"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu kapkara bir sel artıgına ceviren"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı) okutacagız; sen hic unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Artık Allah'ın diledigi haric, suphesiz Allah, acıgı ve gizleneni bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolaya muvaffak kılacagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eger ogut fayda verirse ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) korkan ogutten yararlanacak"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kotu kimse ise ogutten kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "En buyuk atese girecek olan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra o, ateste ne olur ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Temizlenen, kimse kuskusuz kurtulusa ermistir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp O'na kulluk eden"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz (ey insanlar!) dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret daha hayırlı ve daha devamlı oldugu halde"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz bu (anlatılanlar), onceki kitaplarda"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim ve Musa'nın kitaplarında da vardır"
        }
    ]
}