{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gokyuzu yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "yıldızlar dokuldugu zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler birbirine katıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kabirlerin icindekiler dısarı cıkarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "insanoglu (yapıp) gonderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Ihsanı bol Rabbine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Seni yaratıp seni duzgun ve dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "seni istedigi bir sekilde birlestiren"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Butun bunlara ragmen siz yine de dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Sunu iyi bilin ki uzerinizde bekciler"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "degerli yazıcılar vardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "onlar, yapmakta olduklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler muhakkak cennette"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gununde oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar (kafirler) oradan bir daha da ayrılmazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gunu nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Nedir acaba o ceza gunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun hicbir kimse baskası icin bir sey yapamaz. O gun is Allah'a kalmıstır"
        }
    ]
}