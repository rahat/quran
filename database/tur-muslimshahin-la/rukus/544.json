{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Cokluk kuruntusu sizi o derece oyaladı ki"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "nihayet kabirleri ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır! Yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Elbette yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Gercek oyle degil ! Kesin bilgi ile bilmis olsaydınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "(orada) mutlaka cehennem atesini gorurdunuz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra ahirette onu cıplak gozle goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Nihayet o gun (dunyada yararlandıgınız) nimetlerden elbette ve elbette hesaba cekileceksiniz"
        }
    ]
}