{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır hayır (ogut almazlar). Aya andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Donup gitmekte olan geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "agarmakta olan sabaha andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "O (cehennem), buyuk musibetlerden biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Insanlık icin, uyarıcı"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden ileri gitmek ya da geri kalmak isteyen kimseler icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis, kazandıgına karsılık bir rehindir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "ancak sagdakiler baska"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennetler icindedir. Uzaktan uzaga sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Gunahkarlara"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi su yakıcı atese sokan nedir? diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar soyle cevap verirler: Biz namaz kılanlardan degildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "yoksulu doyurmuyorduk"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "(Batıla) dalanlarla birlikte dalıyorduk"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ceza gununu de yalan sayıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "sonunda bize olum geldi cattı"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık sefaatcilerin sefaati onlara fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Boyle iken onlara ne oluyor ki, yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Adeta yaban esekleri gibi (hala) ogutten"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "arslandan urkup kacan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Daha dogrusu onlardan her biri, kendisine, (onunde) acılmıs sahifeler (Ilahi vahiy) verilmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır! Aslında onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Asla (dusundukleri gibi degil)! Bilsinler ki bu, gercekten bir ikazdır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan (dusunup) ogut alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bununla beraber, Allah dilemeksizin onlar ogut alamazlar. Sakınılmaya layık olan da O'dur, magfiret sahibi de O’dur"
        }
    ]
}