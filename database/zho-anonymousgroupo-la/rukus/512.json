{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "wo yi fuhuo ri mengshi"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "wo yi zi ze de linghun mengshi"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "nandao ren caixiang wo jue buneng jihe ta de haigu ma"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Buran,(wo jiang jihe ta de haigu), erqie neng shi ta de mei ge shouzhi fuyuan"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Buran, ren yu chang ci fangdang xiaqu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Ta wen fuhuo ri zai shenme shihou"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Dang yanmu hunhua"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "yueliang hun'an"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "ri yue xianghe de shihou"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "zai na ri, ren jiang shuo:“Tao dao nali qu ne?”"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Jue buran, jue wu renhe binan suo"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Zai na ri, wei ni de zhu nali, you anding zhi suo"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "Zai na ri, ge ren jiang jie dao guanyu ziji qian qianhou hou zuoguo de yiqie shiwu de baogao"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Buran, ge ren dui ziji jiushi mingzheng"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "jishi ta duofang tuoci"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ni buyao yaodong ni de shetou, yibian ni cangcu de songdu ta"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Jihe ta he songdu ta, que shi wo de zeren"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Dang wo songdu ta de shihou, ni dang jing ting wo de songdu"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Ranhou jieshi ta, yeshi wo de zeren"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Zhen de, nimen xi'ai xianshi de shenghuo"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "er bugu houshi de shenghuo"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Zai na ri, xuduo mianmu shi guanghua de"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "shi yangshizhe tamen de zhu de"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Zai na ri, xuduo mianmu shi chouku de"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "tamen quexin ziji bi zao da nan"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Zhen de, linghun dadao suogu"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "youren shuo:“Shei shi zhu you de?”"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Ta quexin na shi libie"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "(Si shi) jing yu jing xiang chan jie"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Zai na ri, ta zhi bei quce dao ni de zhu nali"
        }
    ]
}