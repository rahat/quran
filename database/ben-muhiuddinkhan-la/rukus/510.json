{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "He cadarabrta"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "uthuna, satarka karuna"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "apana palanakartara mahatmya ghosana karuna"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "apana posaka pabitra karuna"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "ebam apabitrata theke dure thakuna."
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Adhika pratidanera asaya an'yake kichu dibena na."
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Ebam apanara palanakartara uddese sabara karuna."
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Yedina singaya phumka deya habe"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "sedina habe kathina dina"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "kapheradera jan'ye eta sahaja naya."
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Yake ami anan'ya kare srsti karechi, take amara hate chere dina."
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Ami take bipula dhana-sampada diyechi."
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "Ebam sada sangi putrabarga diyechi"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "ebam take khuba sacchalata diyechi."
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Erapara'o se asa kare ye, ami take ara'o besi de'i."
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Kakhana'i naya! Se amara nidarsanasamuhera birud'dhacaranakari."
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Ami sattbara'i take sastira pahare arohana karaba."
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Se cinta kareche ebam manahsthira kareche"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "dhbansa hoka se, kirupe se manahsthira kareche"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "abara dhbansa hoka se, kirupe se manahsthira kareche"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "se abara drstipata kareche"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "atahpara se bhrukuncita kareche o mukha bikrta kareche"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "atahpara prsthapradasana kareche o ahankara kareche."
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Erapara balecheh eto loka parasparaya prapta jadu bai naya"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "eto manusera ukti bai naya."
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Ami take dakhila karaba agnite."
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Apani ki bujhalena agni ki"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "eta aksata rakhabe na ebam charabe'o na."
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Manusake dagdha karabe."
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Era upara niyojita ache unisa (pheresata)."
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Ami jahannamera tattbabadhayaka pheresata'i rekhechi. Ami kapheraderake pariksa karara jan'ye'i tara e'i sankhya karechi-yate kitabira drrhabisbasi haya, muminadera imana brd'dhi paya ebam kitabira o muminagana sandeha posana na kare ebam yate yadera antare roga ache, tara ebam kapherara bale ye, allaha era dbara ki bojhate ceyechena. Emanibhabe allaha yake iccha pathabhrasta karena ebam yake iccha satpathe calana. Apanara palanakartara bahini samparke ekamatra tini'i janena eta to manusera jan'ye upadesa bai naya."
        }
    ]
}