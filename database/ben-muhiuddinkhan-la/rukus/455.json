{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Kasama jhanjhabayura."
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Atahpara bojha bahanakari meghera."
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Atahpara mrdu calamana jalayanera"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "atahpara karma bantanakari pheresataganera"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "tomadera pradatta oyada abasya'i satya."
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Inasapha abasyambhabi."
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Pathabisista akasera kasama"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "tomara to birodhapurna katha balacha."
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Ye bhrasta, se'i e theke mukha phiraya"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "anumanakarira dhbansa hoka"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "yara udasina, bhranta."
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Tara jijnasa kare, keyamata kabe habe"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "yedina tara agnite patita habe"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "tomara tomadera sasti asbadana kara. Tomara eke'i tbaranbita karate ceyechila."
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Khodabhirura jannate o prasrabane thakabe."
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Ematabasthaya ye, tara grahana karabe ya tadera palanakarta taderake debena. Niscaya itipurbe tara chila satkarmaparayana"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "tara ratrira saman'ya anse'i nidra yeta"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "ratera sesa prahare tara ksamaprarthana karata"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "ebam tadera dhana-sampade prarthi o bancitera haka chila."
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Bisbasakaridera jan'ye prthibite nidarsanabali rayeche"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "ebam tomadera nijedera madhye'o, tomara ki anudhabana karabe na"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "akase rayeche tomadera riyika o pratisruta sabakichu."
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Nabhomandala o bhumandalera palanakartara kasama, tomadera kathabartara mata'i eta satya."
        }
    ]
}