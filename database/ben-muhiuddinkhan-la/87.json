{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Apani apanara mahana palanakartara namera pabitrata barnana karuna"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "yini srsti karechena o subin'yasta karechena."
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ebam yini suparimita karechena o patha pradarsana karechena"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "ebam yini trnadi utpanna karechena"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "atahpara karechena take kala abarjana."
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ami apanake patha karate thakaba, phale apani bismrta habena na"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allaha ya iccha karena ta byatita. Niscaya tini janena prakasya o gopana bisaya."
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ami apanara jan'ye sahaja sariyata sahajatara kare debo."
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Upadesa phalaprasu hale upadesa dana karuna"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "ye bhaya kare, se upadesa grahana karabe"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "ara ye, hatabhaga, se ta upeksa karabe"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "se maha-agnite prabesa karabe."
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Atahpara sekhane se marabe'o na, jibita'o thakabe na."
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Niscaya saphalya labha karabe se, ye sud'dha haya"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ebam tara palanakartara nama smarana kare, atahpara namaya adaya kare."
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Bastutah tomara parthiba jibanake agradhikara da'o"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "athaca parakalera jibana utkrsta o sthayi."
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Eta likhita rayeche purbabati kitabasamuhe"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ibrahima o musara kitabasamuhe."
        }
    ]
}