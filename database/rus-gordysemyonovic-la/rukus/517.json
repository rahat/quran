{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Blagochestivyye budut pod sen'yu i sredi istochnikov"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "I plodov, kakikh tol'ko pozhelayut"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Kushayte, peyte na zdorov'ye, v nagradu za vashi dela"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Tak nagrazhdayem dobrodetel'nykh"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "V tot den' gore veruyushchim v lozh'"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Kushayte i naslazhdaytes' nenadolgo; potomu chto vy zakonoprestupny"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "V tot den' gore veruyushchim v lozh'"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Kogda im govoryat: \"Poklonyaytes' Bogu\", - oni ne poklanyayutsya"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "V tot den' gore veruyushchim v lozh'"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Posle sego, kakomu novomu ucheniyu poveryat oni"
        }
    ]
}