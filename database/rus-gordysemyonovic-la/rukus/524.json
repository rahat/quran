{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kogda nebo rastorgnetsya"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Kogda zvezdy rasseyatsya"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Kogda morya pol'yutsya"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kogda groby otkroyutsya"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Togda dusha uvidit, chto sdelala ona prezhde i chto delala posle"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Chelovek! Chto vozbuzhdayet tebya k derzosti protiv dolzhnochtimogo Gospoda tvoyego"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Kotoryy sotvoril tebya, dal tebe stroynost', vse v tebe sorazmeril"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Sostavil tebya v tom obraze, v kakom khotel"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "No pri vsom etom, vy schitayete eto veroucheniye lozhnym"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Istinno, pri vas yest' strazhi"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Dostochtimyye, zapisyvayushchiye"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Oni znayut, chto delayete vy"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Istinno, blagochestivyye budut v otrade"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Istinno, nechestivyye budut v ade"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "V den' suda oni budut goret' v nem"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "I ot nego ne osvobodyatsya"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "O yesli by uznal, kakov budet den' suda"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Da, o yesli by uznal ty, kakov budet den' suda"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "V tot den' ni odna dusha ne mozhet nichego sdelat' dlya drugoy dushi: v tot den' vse vo vlasti Boga"
        }
    ]
}