{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Por certo, os piedosos estarao entre sombras e fontes"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "E frutas de quanto apetecerem"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Dir-se-lhes-a: \"Comei e bebei com deleite, pelo que fazieis"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Por certo, assim recompensamos os benfeitores"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "O increus, comei e gozai um pouco, por certo, sois criminosos"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "E, quando se lhes diz: \"Curvai-vos\", nao se curvam"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Entao, em que Mensagem, depois dele crerao"
        }
    ]
}