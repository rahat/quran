{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Suratu An-Naba. Sobre o que eles se interrogam mutuamente"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Sobre o formidavel Informe"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "De que sao discrepantes"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Nao! Eles logo saberao"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Mais uma vez, nao! Eles logo saberao"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Nao fizemos da terra leito"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "E das montanhas estacas"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "E vos criamos casais"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "E fizemos de vosso sono descanso"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "E fizemos da noite vestimenta"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "E fizemos do dia tempo de vida"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "E edificamos, acima de vos, sete solidos ceus"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "E fizemos um luzeiro reverberante"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "E fizemos descer, das nuvens carregadas, agua copiosa"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Para, com ela, fazer sair graos e plantas"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "E frondosos jardins"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Por certo, o Dia da Decisao e um tempo marcado"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Um dia, em que se soprara na Trombeta; entao, chegareis em turbas"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "E abrir-se-a o ceu e tornar-se-a em portas"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "E mover-se-ao as montanhas, entao, serao miragem"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Por certo, a Geena sera lugar de espreita"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Morada para os transgressores"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Nela, permanecerao por seculos"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Nela, nao experimentarao frescor nem bebida"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Exceto agua ebuliente e vazar purulento"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Como adequada recompensa"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Por certo, eles nao esperavam prestar conta"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "E desmentiram Nossos sinais, constantemente"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "E cada cousa, enumeramo-la por escrito"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Dir-se-lhes-a: \"Entao, experimentai a recompensa, pois nao vos acrescentaremos senao castigo"
        }
    ]
}