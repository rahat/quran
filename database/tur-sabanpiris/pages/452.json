    "pages": [
        {
            "chapter": 37,
            "verse": 154,
            "text": "Size ne oluyor? Nasıl hüküm verebiliyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "Hiç düşünmüyor musunuz"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "Yoksa sizin çok açık bir belgeniz mi var"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "Eğer doğru söylüyorsanız, haydi kitabınızı getirin"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "Allah ile cinler arasında bir soy bağı icat ettiler. Cinler de elbette hesaba çekilebileceklerini biliyorlar"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "Allah, onların vasıflandırdıkları şeylerden uzaktır"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "Allah’ın ihlaslı kulları hariç (bir yana)"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "Siz ve kulluk ettikleriniz"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "Cehenneme atılacaklardan başka kimseyi yoldan çıkaramazsınız"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "Cehenneme atılacaklardan başka kimseyi yoldan çıkaramazsınız"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "Biz (meleklerin) her birimizin belli bir mevkisi vardır"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "Biz, elbette biz dizi dizi olanlarız"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "Ve yine biz, tesbih ediciler biziz"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "Onlar, şöyle diyorlardı"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "Öncekilerden yanımızda bir zikir/kitap olsaydı"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "Elbette Allah’ın ihlaslı kulları olurduk"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "Şimdi ise O’nu inkar ettiler. Ama bilecek onlar"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "Peygamber olarak gönderilmiş olan kullarımız hakkında hükmümüz verilmiştir"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "Onlara mutlaka yardım edilecektir"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "Bizim ordularımız galip gelecektir"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "Öyleyse bir süreye kadar onlardan yüz çevir"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "Onları gözle, onlar da gözleyecekler"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "Azabımızı mı acele istiyorlar"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "Azap, onların alanına inince, uyarılanların sabahı ne acıdır"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "Bir süreye kadar onlardan uzaklaş"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "Ve gözle, onlar da gözleyecekler"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "Gücün ve üstünlüğün sahibi olan Rabbin, onların nitelediklerinden yücedir (uzaktır)"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "Selam elçilere"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "Hamd ise alemlerin Rabbi Allah’adır"
        }
    ]
}