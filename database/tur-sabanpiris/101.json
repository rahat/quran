{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Korkunç olay"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir korkunç olay"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Korkunç olayın ne olduğunu nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün, insanlar, dağılmış pervaneler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar ise saçılmış yün gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, hoşnut olacağı bir hayat içinde"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun da anası Haviye"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sana bildiren ne"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        }
    ]
}