{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "(Her şeyden) yüce olan Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratan ve biçim veren"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir eden ve yol gösteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Merayı/otlağı çıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Ve onu kuru ota çeviren O’dur"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur’an’ı) okutacağız, sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allah’ın dilediği dışında.. Çünkü O, açıktakini de gizli olanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Kolay olması için seni başarılı kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde, öğüt/uyarı fayda verecekse öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "İsyankar olan ondan kaçar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O, büyük ateşe girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Orada ne ölür; ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Arınan kurtuluşa ermiştir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp, namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Siz, dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret ise daha iyi ve kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, evvelkilerin sahifelerinde de (yazılıdır)"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim’in ve Musa’nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Bürüyen/ansızın gelecek olanın haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün, yüzler vardır yere yıkılmış"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmış, boşa yorulmuş"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın ateşe yaslanan"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan içen"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara kuru dikenden başka yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne semirtir ne açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O günde yüzler vardır pırıl pırıl"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Çalışmasından hoşnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yükseltilmiş sedirler/yataklar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Doldurulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmazlar mı deveye? Nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve göğe.. Nasıl yükseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve dağlara.. Nasıl dikildi"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yere.. Nasıl yayıldı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Hatırlat/uyar! Sen ancak uyarıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlar üzerinde bir zorba değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak, kim yüz çevirir ve nankör/kafir olursa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en büyük cezaya çarptırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphesiz onların dönüşü bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da onların hesabını görmek bize düşer"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun Fecre"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On Gece’ye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Çifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Geçip giden geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Bunda akıl sahibi için bir yemin var mıdır"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Ad kavmine Rabbin neler yaptı, görmedin mi"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sütunlar sahibi İrem’e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ve şehirler arasında bir benzeri yaratılmamıştı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Ki vadide kayalar oyan Semud’a"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Kazıklar/pramitler sahibi Firavun’a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Onlar, ülkelerde azmışlardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda fesadı çoğaltmışlardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Rabbin de onlara azap kırbacı yağdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Çünkü Rabbin gözetleyip durmaktadır"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "İşte insan, onu Rabbi imtihan ettiği zaman, ona ikramda bulunup, nimetlendirince: -Rabbim bana ikramda bulundu der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama onu, imtihan edip, rızkını daralttığında: -Rabbim bana ihanet etti, der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır, yetime ikramda bulunmuyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Düşkünü doyurmaya teşvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası da hak gözetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı da pek çok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, Yer paramparça olduğu zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin ve saf saf melekler geldiğinde"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "İşte cehennem o gün getirilir. Ve insan o gün doğruyu hatırlar. Ama nasıl öğüt alacak"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Oysa dünya hayatının ve imtihanın sona erdiği o gün öğüt alma günü değil, karar günüdür. Orada gerçeği anlamak artık işe yaramaz. Ve insanlar her şeyin gerçekliğinin bütün çıplaklığı ile gözler önüne serildiği o gün şöyle der: -Keşke hayatım için hazırlıkta bulunsaydım"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "İşte, hiç kimse o gün Allah’ın cezalandırdığı gibi cezalandıramaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "Hiç kimse onun bağladığı gibi bağlayamaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura ermiş can"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Hoşnut olarak, hoşnut olunarak Rabbine dön"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Kullarımın arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Ve gir cennetime"
        }
    ]
}