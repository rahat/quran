{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi soruşturup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Büyük haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Onlar ki, hakkında ihtilaf ediyorlar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, yakında öğrenecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Sonra, Hayır, yakında öğrenecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeri bir beşik kılmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi de çift çift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi örtü kıldık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü de geçimlik kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Üstünüze de sapasağlam yedi kat bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Işık saçan bir de lamba yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Yoğun bulutlardan şarıl şarıl su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler ve bitkiler çıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine girmiş sarmaş dolaş bahçeler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Ayırım/fasl günü belirlenmiş bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur’a üflendiği gün bölük bölük geleceksiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "(O gün) gök açılıp, kapı kapı olmuştur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Dağlar yürütülüp, serap olmuştur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem de gözlemektedir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınların varacağı yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada çağlar boyu kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne serinlik ne de içecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Kaynar su ve irinden başka"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Uygun bir ceza"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Çünkü onlar, hesabı ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi yalanladıkça yalanlamışlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Her şeyi sayıp bir kitap/yazıt olarak kaydetmiştik"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "İşte, tadına bakın, size azaptan başka bir şey artırmayacağız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Muttakiler için kurtuluş"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bahçeler ve bağlar"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Göğüsleri tomurcuklanmış yaşıt kızlar"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Dolu dolu kadehler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada boş ve yalan söz işitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Rabbinden bir karşılık, yeterli bir bağış olarak"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Göklerin, yerin ve arasındakilerin merhametli Rabbinden.. Onun huzurunda konuşamazlar"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Ruh ve meleklerin saf halinde durdukları gün, ancak Rahman’ın kendisine izin verdiği konuşabilir. O da doğruyu söyler"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "İşte o, hak günüdür. Dileyen Rabbi´ne doğru yol tutar"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azap ile uyardık. Kişi o gün, elleri ile ne sunduğuna bakar. Kafir olan da: -Keşke toprak olsaydım! der"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun şiddetle söküp alanlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Kolayca çekip çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzdükçe yüzenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıştıkça yarışanlara"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve işleri düzene sokanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün sarsılacak olan sarsılır"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Bir diğeri onu izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün çarpan kalpler vardır"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözleri korku ile yere eğilmiştir"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Çukurdan geri mi çıkacağız? derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Çürüyüp ufalanmış kemikler haline geldiğimiz zaman"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Öyleyse bu dönüş hüsrandır, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O, ancak tek bir çığlıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "İşte o zaman onlar, hemen uyanacaktır"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa’nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani, Rabbi ona, mukaddes Tuva’da seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun’a git, çünkü o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ve de ki: -Arınmaya istekli misin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Sana, Rabbine giden yolu göstereyim de O’ndan saygı ile korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona en büyük mucizeyi/ayeti gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını dönüp, koşmaya başladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplantı yapıp, şöyle seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yüce Rabbi’niz/kralınız benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu dünya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "İşte bunda saygı ile korkan kimse için bir ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi mi (yeniden) yaratmak daha güçtür; yoksa göğü mü? Onu bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Yükseklere kaldırdı ve düzenledi"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karanlık yaptı, gündüzünü aydınlığa çıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeri, bundan sonra yaydı"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlağını çıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dağları da yerleştirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın yararlanması için"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "En büyük baskın geldiği zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gün insan neye çalıştığını hatırlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Gören kimselere cehennem gösterilir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Kim azdıysa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dünya hayatını tercih ettiyse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Cehennem onun varacağı yerdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ama, kim de Rabbinin makamından korkup, kendisini heveslerine uymaktan alıkoymuşsa"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Cennet de onun varacağı yerdir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyametin ne zaman gerçekleşeceğini soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Senin neyine ondan haber vermek"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Rabbine aittir, onun sonucu"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkan kimseye bir uyarıcısın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gördükleri gün, onlar sanki, sadece bir akşam veya bir kuşluk vakti süresince (dünyada) kalmış olurlar"
        }
    ]
}