{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Hala bilmiyor mu? Mezardakilerin dışa çıkarıldığında"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Kalplerdeki ortaya konduğunda"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Şüphesiz o gün, Rab’leri kendilerinden haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Korkunç olay"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir korkunç olay"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Korkunç olayın ne olduğunu nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün, insanlar, dağılmış pervaneler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar ise saçılmış yün gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, hoşnut olacağı bir hayat içinde"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun da anası Haviye"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu sana bildiren ne"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çoklukla övünmek sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Mezarları ziyaret edinceye / ölünceye dek"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır, Kesin bir bilgiyle bilseniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Elbette cehennemi görürsünüz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Nitekim onu, yakın bir gözle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra, o gün nimetlerden hesaba çekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun Asr´a"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "İnsanlık hüsranda"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edenler ve doğruları yapanlar, birbirlerine hakkı ve sabrı tavsiye edenler müstesna"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Bütün koğuculuk yapanların, insanları arkadan çekiştirenlerin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Mal toplayıp, onu tekrar tekrar sayan"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Zannediyor ki malı kendisini kalıcı kılacak"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, Kesinlikle o hutameye atılacak"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah’ın tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Kalplere işleyen"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O üzerlerine kapatılacak"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzatılmış sütunlar arasında"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin, fil sahiplerini ne hale getirdiğini görmedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların üzerine damgalanmış taşlar atan ebâbil kuşlarını gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onların üzerine damgalanmış taşlar atan ebâbil kuşlarını gönderdi"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Onları yenilmiş ekin gibi yaptı"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş’in güvenliği ve iyiliği için"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Onların kış ve yaz yolculuklarının güvenliğinden dolayı"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu Beyt/Kâbe’nin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Onları açlıktan doyuran ve korkularından emin kılana"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Hüküm gününü yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Yetimi itip kakan işte odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Düşkünü doyurmaktan hoşlanmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Öyleyse yazıklar olsun o namaz kılanlara"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Kıldıkları namazdan gafil olanlara"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Gösteriş yapanlara"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ufak tefek yardıma bile engel olanlara"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana sayısız nimetler verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Öyleyse sen de Rabbin için namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Gerçek şu ki sana kin besleyen /düşmanının soyu kesiktir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: -Ey Kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin kulluk ettiğinize kulluk etmem"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim kulluk ettiğime kulluk edenler değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben sizin kulluk ettiğinize kulluk edecek değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim kulluk ettiğime kulluk edecek değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah’ın yardımı/zaferi ve fetih geldiği zaman"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "İnsanların akın akın Allah’ın dinine girdiğini gördüğün zaman"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Hemen, hamd ederek Rabbini tesbih et ve O’ndan bağışlanma dile. Şüphesiz O, çok bağışlayıcıdır"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Elleri kurusun Ebu Leheb’in, kurudu ya"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ona, malı ve kazandıkları fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alevli bir ateşe girecektir"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da, odun taşıyıcısı"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda hurma lifinden bir ip ile"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: -O Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah sameddir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Baba olmamıştır ve doğmamıştır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hiç kimse de O’na denk olamaz"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: -Mahlukatın Rabbine sığınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Çöktüğü zaman karanlığın şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Düğümlere üfleyenlerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Haset ettiği zaman hasetçinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: -İnsanların Rabbine sığınırım"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "İnsanların hakimine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "İnsanların ilahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Sinsi vesvesecinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "İnsanların gönüllerine vesvese sokan"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Cinlerden ve insanlardan"
        }
    ]
}