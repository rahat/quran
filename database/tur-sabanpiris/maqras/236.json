{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine boyun eğdiği zaman.. Ki ona yaraşan da budur"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yeryüzü dümdüz edildiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçindekiler boşalıp, atıldığı zaman"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve kendisine yaraştığı gibi Rabbine boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, sen, Rabbine kavuşmak için çabalayıp durdun. İşte ona kavuştun"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağından verilmişse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesapla hesap verecektir"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ailesinin yanına sevinç içinde dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilmişse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Ölüp, yok olmak isteyecek"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Nitekim o, ailesinin yanında neşeli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, asla dönmeyeceğini sanıyordu"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Elbette dönecekti! Çünkü Rabbin onu gözlüyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Andolsun şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve kapladıklarına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki Ay’a"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Elbette sen, bir aşamadan bir aşamaya geçeceksin"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara ne oluyor da iman etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlara Kur’an okunduğu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, o inkarcılar (gerçeği) yalan sayıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah, onların (içlerinde) sakladıklarını en iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara acı bir azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak, iman edip doğruları yapanlar hariç. Onlar için kesintisiz bir ödül vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlar sahibi göğe andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Ve vaad edilen güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şahid olana ve şahid olunana"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahrolsun hendek sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Tutuşturulmuş ateş"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Kenarında oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yaptıklarını seyretmekteler"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan sadece, Aziz ve Hamid olan Allah’a iman ettikleri için intikam alıyorlar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Göklerin ve yerin hakimiyeti kendisinin olan... Her şeye şahid olan Allah’a"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Erkek ve kadın mü’minleri ateşe atıp, sonra da tevbe etmeyenlere, onlara cehennem azabı vardır. Onlara yakıcı azap vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İman edip, doğruları yapanlara, onlara alt tarafından ırmaklar akan cennetler var. İşte bu büyük kurtuluş"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Şüphesiz Rabbinin yakalayışı ise çok şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "İlk defa yaratan ve tekrar diriltecek olan O’dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Çok bağışlayıcı ve (müminleri) çok seven O’dur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Yüce arşın sahibi"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Ne dilerse yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Sana o orduların haberi gelmedi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud’un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Kafir olanlar, yalanlayıp duruyorlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise onların arkasındadır. Onları kavramıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır, o şerefli Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz’dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve Tarık’a andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık’ı sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Pırıl pırıl bir yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Üzerinde gözetici bulunmayan hiç kimse yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Öyleyse, insan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratılmıştır"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "O, bel ile göğüs kemikleri arasından çıkan"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Allah, onu yeniden yaratmaya elbette kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların açığa çıktığı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Onun bir gücü ve bir yardımcısı yoktur"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Yağmur yağdıran göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Çatlayan toprağa andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kesinlikle o ayırdedici bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar ise tuzak kurup duruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Kafirlere mühlet ver, onlara biraz süre tanı"
        }
    ]
}