{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin göğsünü ferahlatıp, genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yükünü üzerinden indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o belini bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Şanını / anlayışını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Şüphesiz her zorlukla, bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Yine her zorlukla bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Öyleyse bir işi bitirince diğerine giriş"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Yalnız Rabbine rağbet et / yönel"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun, İncir ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dağı’na"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve bu güvenli beldeye"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz, insanı en güzel şekilde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Daha sonra, onu aşağıların en aşağısına indirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Kendilerine kesintisiz bir ödül verilecek olan iman edip doğruları yapanlar dışında"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "O halde, sana dini/hesap gününü yalan saydıran nedir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Allah, hakimlerin hakimi değil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku! Yaratan Rabbinin adıyla"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "İnsanı alaktan yaratan"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku! Rabbin, en cömerttir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalemle öğreten"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini öğretendir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır! Şüphesiz insan azgınlık ediyor"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendisini ihtiyaçsız görmekle"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Oysa, dönüş Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engelleyeni gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gördün mü? Eğer hidayet üzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya takvayı emrettiyse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü? Eğer, yalanlamış ve yüz çevirmişse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Allah’ın gördüğünü bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır! Eğer son vermezse, elbette perçeminden yakalayıp, sürükleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, günahkar perçeminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Haydi çağırsın çetesini/meclisini"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Çağıracağız zebanileri"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır! ona itaat etme! Secde et ve yaklaş"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Şüphesiz biz, (Kur’an’ı) Kadir gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir gecesinin ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir gecesi bin aydan hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh, Rabbinin izni ile her iş için o gece iner"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "O, tan yeri ağarana dek esenliktir"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap ehlinden ve müşriklerden inkar edenler, kendilerine açık belgeler gelinceye kadar ayrılanlar olmadılar"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "Allah’tan kendilerine tertemiz sahifeler okuyan bir elçi"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "İçinde değerli yazıların bulunduğu (sahifeler)"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kendilerine kitap verilenler, ancak kendilerine apaçık belgeler geldikten sonra ayrılığa düştüler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Onlar, sadece dini/otoriteyi Allah’a has kılan hanifler olarak ona kulluk etmek, namazı kılmak, zekatı vermek ile emrolunmuşlardı. İşte dosdoğru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap ehlinden ve müşriklerden inkar edenler, içinde ebedi kalacakları cehennem ateşindedirler. İşte onlar, yaratılmışların en şerlileridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "İman eden ve doğruları yapanlar ise, işte onlar, yaratılmışların en hayırlıları onlardır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların ödülü, Rab’leri katında, altından ırmaklar akan ve içinde ebedi kalacakları Adn cennetleridir. Allah, onlardan razı olmuştur. Onlar da Allah’tan razı olmuşlardır. İşte bu mükafat, Rabbinden korkanındır"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, tam bir sarsıntı ile sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsan: -Buna ne oluyor? dediğinde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün, haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar yaptıklarını görmeleri için bölük bölük gelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre ağırlığınca iyilik yapmışsa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre ağırlığınca kötülük yapmışsa onu görür"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun, soluya soluya koşanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Koşarken) kıvılcım saçanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Topluluğun ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "İnsan, Rabbine karşı gerçekten nankördür"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Kendisi de buna şahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Şüphesiz onun mal sevgisi de çok şiddetlidir"
        }
    ]
}