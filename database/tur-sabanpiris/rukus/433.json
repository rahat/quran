{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Zakkum ağacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Günahkarın yemeğidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Yanmış yağ gibi karınlarda kaynar durur"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Kaynar suyun kaynadığı gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu tutun, cehennemin ortasına atın"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra kaynar su azabından başından aşağı boşaltın"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tat bunu, hani sen güçlü ve şerefliydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "İşte bu sizin hakkında şüphe ettiğiniz şeydir"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Kendilerini günahlardan koruyanlar ise, onlar güvenli bir makamdadırlar"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Cennetlerde ve pınarlarda"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Halis ipek ve parlak atlastan elbiseler giyerek, karşılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "İşte böyle, onları iri gözlü hurilerle evlendirmişizdir"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Orada güven içinde olarak her meyveyi isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "İlk ölümden başka bir ölüm tatmazlar. Onlar cehennem azabından korunmuştur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinden bir lütuf olarak. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Öğüt alsınlar diye onu senin dilin ile kolaylaştırdık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "O halde bekle zaten onlar da bekliyorlar"
        }
    ]
}