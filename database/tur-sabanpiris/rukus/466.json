{
    "rukus": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur’anı öğretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "İnsanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı öğretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Güneş ve ay bir hesaba bağlıdır"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler, ağaçlar da boyun eğerler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "(Allah) Göğü yükseltip, ona da bir ölçü koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "O halde, ölçüde eğrilik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Doğru tartın, eksik tartmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Yeryüzünü yarattıkları için alçalttı. Boyun eğdirdi"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyveler, salkım salkım hurmalar"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yapraklı taneler ve hoş kokulu bitkiler vardır"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Öyleyse Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "İnsanı iyice pişmiş gibi kuru balçıktan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de yalın bir alevden yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "O halde Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "O, iki doğunun da Rabbi, iki batının da Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Öyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "İki denizi birbiriyle kavuşsun diye salıvermiştir"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Birbirine kavuşmasını önleyen aralarında bir engel vardır"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Öyleyse Rabbinizin hangi nimetini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "Onlardan inci ve mercan çıkar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Öyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizlerde yüzen dağlar gibi gemiler de Onundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Öyleyse Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        }
    ]
}