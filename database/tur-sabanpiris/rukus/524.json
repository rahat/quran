{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar/gezegenler dağılıp, parçalandığı"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler taşırıldığı"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına çıkarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Kişi ne hazırlamış olduğunu ne ertelemiş olduğunu bilecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni yaratan ve seni düzenleyip, sana biçim veren, çok cömert ve bağışlayıcı Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Ey insan, seni yaratan ve seni düzenleyip, sana biçim veren, çok cömert ve bağışlayıcı Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "O, seni dilediği sûrette tertip etti"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, aksine dini/hesabı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa üzerinizde kaydediciler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Şerefli yazıcılar/Kiramen katibin"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ne yaptığınızı biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler, elbette nimetler içinde olacaktır"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler/günahkarlar ise kesinlikle cehennemdedir"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din günü oraya atılacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar, oradan kaybolacak değillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sana bildiren nedir? Din gününün ne olduğunu"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Yine, Din gününün ne olduğunu Sana bildiren nedir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Hiç kimsenin, hiç kimseye sahip olamayacağı bir gündür. O gün, emir sadece, Allah’ındır"
        }
    ]
}