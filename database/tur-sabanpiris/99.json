{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, tam bir sarsıntı ile sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsan: -Buna ne oluyor? dediğinde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gün, haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar yaptıklarını görmeleri için bölük bölük gelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre ağırlığınca iyilik yapmışsa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre ağırlığınca kötülük yapmışsa onu görür"
        }
    ]
}