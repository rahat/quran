{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Gerçekleşecek olan gerçekleştiği zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Bunun olacağı yalan değildir"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Yer sarsıldıkça alçalacak, sarsıldıkça yükselecektir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olduğu"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Un ufak etrafa dağıldığı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Siz de üç gruba ayrılmış olacaksınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağ taraf halkı... Ne sağ taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol taraf halkı... Ne sol taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve önde olanlar, öncüdürler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar, en gözde olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Süslenmiş tahtlar üzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşı karşıya oturup, arkalarına yaslanmışlardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Tertemiz kaynağından doldurulmuş ibrikler, testiler ve fincanlarla"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Baş ağrısı vermeyen ve sersemleştirmeyen"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendiklerinden meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki sedef içindeki inciler.. gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karşılık mükafat olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş ve günaha sokacak bir söz işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnızca söylenen: -Selam, selamdır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağ tarafta olanlar, ne mutlu sağ tarafta olanlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Kiraz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılmış gölgede"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayan sularda"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bitip tükenmeyen ve yasaklanmayan meyveler içinde"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan meyveler içinde"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksek yataklar içindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o kadınları yeni bir yaratılışla yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler şeklinde yarattık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine sevgi ile bağlı olarak"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ taraftakiler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Çoğu da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol taraf halkı, nedir sol taraf halkı"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Kızgın ateş ve kaynar su içindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman gölgesi içinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serinlik yok, bağış yok"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar, bundan önce sorumsuzca ve konfor içinde yaşıyorlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günah üzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz? diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha önceki atalarımızda mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: -Öncekiler de sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapıklar, yalanlayanlar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette yiyeceksiniz zakkum ağacından"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı dolduracaksınız hep ondan"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne içeceksiniz kaynar sudan"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin içişi gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Hesap günü onların ziyafeti budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi yarattık, biz! Gerekmez mi tasdik etmeniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attığınız spermleri gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz; yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz! Önümüze de geçilemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi benzerlerinizle değiştirmek ve sizi bilmediğiniz bir şekilde yeniden yaratmak hususunda"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "İlk yaratılışınızı biliyorsunuz, düşünmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğiniz şeyleri gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onları bitiren siz misiniz; yoksa biz mi bitiriyoruz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilersek, onu çör çöp yaparız da şaşırıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Borca battık, hayır biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Borca battık, hayır biz mahrum bırakıldık, dersiniz"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçtiğiniz suyu gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "İsteseydik onu tuzlu bir su yapardık; şükretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Çaktığınız ateşi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız; yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz, onu bir ibret ve ihtiyaç sahipleri için faydalı kıldık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde yüce Rabbinin adını tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Hayır, yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Şüphesiz bu, büyük bir yemindir, eğer bilirseniz"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Hayır, Şüphesiz o, şerefli bir Kur’an’dır/okumadır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli bir kitapta"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona arınmış olanlardan başkası dokunamaz"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Siz, bu söze inanmıyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete şükür ediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele bir can boğaza gelmiş olmasın"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Siz, o zaman bakıp kalırsınız"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz, ona sizden daha yakınız. Ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Eğer hesaba çekilmeyecek iseniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu geri çeviriniz... Doğru söyleyenlerden iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer o, gözde kimselerden ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Rahatlık, güzel rızık ve nimet cennetleri"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o, sağ taraf halkından ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Sağ taraf halkından sana selam"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer o, yalanlayanlardan ve sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Kaynar suda bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılış"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Bu, kesin gerçeğin ta kendisidir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Öyleyse, yüce Rabbinin adını tesbih et"
        }
    ]
}