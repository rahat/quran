{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Lees voor! In de naam van jouw Heer, Die heeft geschapen"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Hij heeft de mens geschapen van een bloedklomp"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Lees voor! En jouw Heer is de Meest Edele"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Degene Die onderwezen heeft met de pen"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Hij heeft de mens onderwezen wat hij niet wist"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Nee, voorwaar, de mens is zeker in overtreding"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Omdat hij zichzelf als behoefteloos beschouwt"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Voorwaar, tot jouw Heer is de terugkeer"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Wat denk jij van hem die verbiedt"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Een dienaar wanneer hij de shalât verricht"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Wat denk je, als hij (Mohammed) de leiding volgt"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Of hij tot Taqwa oproept"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Wat denk jij, als hij (Abôe Djahl) loochent en zich afwendt"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Weet hij dan niet dat Allah (hem) ziet"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Nee, als hij niet ophoudt, dan zullen Wij hem bij zijn voorhoofdslok grijpen"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Een leugenachtige, zondige voorhoofdslok"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Laat hem dan zijn bondgenoten roepen"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Wij zullen de Zabâniyah roepen"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Nee, gehoorzaam hem niet, en kniel je neer en zoek toenadering (tot Allah)"
        }
    ]
}