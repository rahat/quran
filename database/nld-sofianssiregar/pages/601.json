{
    "pages": [
        {
            "chapter": 103,
            "verse": 1,
            "text": "Bij de tijd"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Voorwaar, de mens lijdt zeker verlies"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Behalve degenen die geloven en goede daden verrichten en elkaar aansporen tot de Waarheid en elkaar aansporen tot geduld"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Wee elke lasteraar en roddelaar"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Degene die bezit verzamelt en het telkens telt"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Hij denkt dat zijn bezit hem eeuwiglevend maakt"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Nee! Hij zal zeker in de vernietiger gesmeten worden"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "En wat doet jou weten wat de vernietiger is"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Het door Allah aangestoken Vuur (de Hel)"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Dat tot in de harten doordringt"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Voorwaar, het zal hen omhullen"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "In langgerekte zuilen"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Heb jij niet vernomen hoe jouw Heer met de mensen van de olifant heeft gehandeld"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Heeft Hij hun plan niet verijdeld"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "En Hij heeft over hen zwermen vogels gezonden"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Die stenen van klei op hen wierpen"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Zo maakte Hij hen als (door wormen) aangevreten bladeren"
        }
    ]
}