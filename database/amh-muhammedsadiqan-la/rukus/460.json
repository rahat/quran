{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "bekokebi imilalehu bewedek’e (begeba) gize፡፡"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "nebiyachihu (muhamedi) alitesasatemi፤ alit’emememimi፡፡"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "kelibi weledimi ayinagerimi፡፡"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "irisu (nigigiru) yemiweriredi ra’iyi iniji lela ayidelemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "hayilochu birituwi (meli’aki) asitemarewi፡፡"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ye‘iwik’eti balebeti yehonewi (asitemarewi፤ betefet’iro k’irits’u hono be’ayeri layi) tedeladelemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "irisu belayinyawi adimasi hono፡፡"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "keziyami k’erebe፤ weredemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "(ke’irisu) yehuleti deganochi ch’afi yahili weyimi (kezihi) yibelit’i yek’erebe honemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "wede bariyawimi (alahi) yaweredewini awerede፡፡"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "(nebiyumi be‘ayinu) yayewini libu aliwashemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "tadiya bemiyayewi layi tikerakerutalachihuni"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "belelayitumi mewiredi gize be’irigit’i ayitotali፡፡"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "bemech’ereshayitu k’urik’ura at’egebi፤"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "iriswa zenidi menoriyayitu geneti yalechi sitihoni፡፡"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "k’urik’urayituni yemishefini negeri bemishefinati gize (ayewi)፡፡"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "‘ayinu (kayewi) alitezenebelemi፡፡ wesenimi alalefemi፡፡"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "kegetawi tamiratochi talalak’ochuni be’irigit’i aye፡፡"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "ali-latinina ali-‘uzani ayachihuni"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "sositenyayitunimi anesitenyawani menatini (ayachihuni? yemitigigezwachewi hayili alachewini)"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "le’inanite wenidi le’irisumi seti (liji) yinoralini"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "yihichi yani gize adilawi kifiya nati፡፡"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "inerisu inanitena abatochachihu (amalikiti bilachihu) yet’erachihwachewi simochi bicha iniji minimi ayidelumi፡፡ alahi be’iriswa (megigezati) minimi masireja alaweredemi፡፡ kegetachewimi memiriya yemet’alachewi sihonu t’irit’arenina nefisochi yemizenebelubetini iniji lela ayiketelumi፡፡"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "lesewi yetemenyewi hulu alewini"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "mech’ereshayitumi mejemeriyayitumi (‘alemi) ye’alahi bicha nachewi፡፡"
        }
    ]
}