{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "هان، اى جامه بر خود كشيده"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "برخيز و بترسان"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "و پروردگار خود را به بزرگى ياد كن"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "و جامه‌ات را پاكيزه دار"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "و از پليدى دورى كن"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "و [براى احسانت‌] منّت نگذار و آن را زياد مشمار"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "و براى پروردگارت شكيبا باش"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "پس چون در صور دميده شود"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "آن روز، روز سختى خواهد بود"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "بر كافران آسان نيست"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "مرا واگذار با آن كس كه [او را] تنها آفريدم"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "و به او مالى بسيار دادم"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "و پسرانى حاضر [به خدمت دادم‌]"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "و برايش بساط [زندگى خوش‌] گستردم"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "باز [هم‌] طمع دارد كه زياد كنم"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "حاشا! همانا او نسبت به آيات ما عناد دارد"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "زودا كه او را به بالا رفتن از گردنه [ى عذاب‌] وادار كنم"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "همانا او [براى مبارزه با قرآن‌] فكر كرد و سنجيد"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "پس مرگ بر او، چگونه سنجيد؟ [و تصميم گرفت]"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "باز هم مرگ بر او، چگونه سنجيد"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "سپس نگاهى افكند"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "آن‌گاه رو ترش كرد و چهره در هم كشيد"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "سپس رو گردانيد و تكبر ورزيد"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "و [در آخر] گفت: اين [قرآن‌] جز سحرى كه [از پيشينيان‌] نقل مى‌شود، هيچ نيست"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "اين نيست مگر سخن آدمى"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "زودا كه او را به «سقر» درآورم"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "و تو چه مى‌دانى كه «سقر» چيست"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "نه باقى مى‌گذارد و نه رها مى‌كند"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "پوست‌ها را سياه مى‌گرداند"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "بر آن [دوزخ‌] نوزده [نگهبان‌] است"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "و ما آتشبانان را جز فرشتگانى قرار نداديم، و تعداد آنها را جز براى امتحان كافران مقرر نكرديم، تا آنان كه اهل كتابند به يقين برسند [كه پيامبر حق است، چون اين مطلب در كتاب آنها نيز هست،] و بر ايمان مؤمنان [نيز] بيفزايد، و اهل كتاب و مؤمنان [در حقانيت قر]"
        }
    ]
}