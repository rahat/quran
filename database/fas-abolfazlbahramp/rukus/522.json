{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "رو ترش كرد و رخ برتافت"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "كه آن نابينا نزد وى آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانى؟ شايد او پاك شود"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "يا پند گيرد و آن پند سودش دهد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن كه [از پند تو] اظهار بى‌نيازى مى‌كند"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو به او مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و اگر هم پاك نشود، گناهى بر تو نيست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن كه شتابان به سويت آمده"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالى كه از خدا مى‌ترسد"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او به ديگرى مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "چنين مپندار، كه اين [آيات‌] تذكارى است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر كه خواهد آن را ياد كند"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "[كه‌] در صحيفه‌هايى ارجمند"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "والا و پاكيزه"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست سفيرانى"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "گرامى و نيكوكار است"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر اين انسان، چقدر حق پوش و ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "خدا او را از چه چيزى آفريده"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "او را از نطفه‌اى آفريد و موزونش ساخت"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "آن‌گاه راه [ايمان و اطاعت‌] را بر او آسان كرد"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "سپس وى را بميراند و به گورش برد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هر وقت بخواهد زنده‌اش مى‌كند"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ولى نه! هنوز [انسان‌] آنچه را كه خدايش فرمان داده به جا نياورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس آدمى بايد طعام خويش را بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "به تحقيق ما آب فراوانى [از آسمان‌] فرو ريختيم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمين را از هم شكافتيم، شكافتنى"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "و در آن دانه‌ها برويانديم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگور و سبزى"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زيتون و خرما"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌هاى پردرخت"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و ميوه و علفزار"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تا متاعى براى شما و چهارپايانتان باشد"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون آن صيحه گوش خراش در رسد"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى كه آدمى از برادرش بگريزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادر و پدرش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از همسر و فرزندانش"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز هر كسى از مردم وضعى دارد كه به خود مشغولش سازد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "آن روز بعضى چهره‌ها باز و روشن‌اند"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شادمانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و برخى چهره‌ها آن روز [گرفته‌اند و] بر آنها غبار [اندوه‌] نشسته است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تيرگى و سياهى آنها را پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "آنان همان كافران بدكارند"
        }
    ]
}