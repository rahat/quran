{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "نه چنين است [كه مى‌پندارند]، سوگند به ماه"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "سوگند به شب چون پشت كند"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "سوگند به بامداد چون رخ نمايد"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "كه قطعا آن [قيامت يا قرآن‌] يكى از بزرگ‌ترين پديده‌هاست"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "هشدارى براى بشر است"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "براى هر كس از شما كه بخواهد [در اطاعت‌] پيش افتد يا پس افتد"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "هر كسى در گرو دستاورد خويش است"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "مگر اهل سعادت، [كه اعمال بد ندارند]"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "كه در بهشت‌ها [نشسته‌] از هم مى‌پرسند"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "در باره‌ى مجرمان"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "[به آنها مى‌گويند:] چه چيز شما را به «سقر» كشانيد"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "گويند: ما از نمازگزاران نبوديم"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "و بينوايان را غذا نمى‌داديم"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "و با آنها كه باطل مى‌بافتند هم آواز مى‌شديم"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "و همواره روز جزا را تكذيب مى‌كرديم"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "تا آن كه مرگ به سراغمان آمد"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "پس شفاعت شفيعان سودشان نبخشد"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "پس آنها را چه شده است كه از اين تذكار [قرآن‌] روى گردانند"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گويى آنان خرانى رمنده‌اند"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "كه از شيرى گريخته‌اند"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلكه هر فردى از آنها انتظار دارد كه وى را نامه‌هاى سرگشاده بدهند"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "چنين نيست، بلكه آنها از آخرت نمى‌ترسند"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "چنين نيست، بى‌ترديد اين [قرآن‌] تذكارى است"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "پس هر كه خواست از آن پند گيرد"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "ولى پند نگيرند مگر آن كه خدا خواهد. او سزاوار پروا و او سزاوار آمرزش است"
        }
    ]
}