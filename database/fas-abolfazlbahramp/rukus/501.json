{
    "rukus": [
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس سوگند به آنچه مى‌بينيد"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و آنچه نمى‌بينيد"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "كه اين [قرآن‌] قطعا گفتار فرستاده‌اى بزرگوار است"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و آن گفتار يك شاعر نيست. اما كمتر ايمان مى‌آوريد"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و نه گفتار كاهنى. چه اندك متذكر مى‌شويد"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "[بلكه‌] نازل شده از جانب پروردگار جهانيان است"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر او حتى يك كلمه [از پيش خود] بر ما دروغ مى‌بست"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "ما دست راست او را مى‌گرفتيم"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "سپس شريان قلبش را قطع مى‌كرديم"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "آن‌گاه احدى از شما مدافع او نبود"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "همانا اين [قرآن‌] تذكارى براى پرهيزكاران است"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و ما بى‌ترديد مى‌دانيم كه برخى از شما تكذيب كنندگان [آن‌] هستيد"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و همين [تكذيب‌] مايه‌ى حسرتى براى كافران است"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و اين [قرآن‌]، بى‌شبهه، حقيقت ثابت است"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس به نام پروردگار بزرگت تسبيح گوى"
        }
    ]
}