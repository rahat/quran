{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "قسم به آسمان و آن ستاره‌ى شبگرد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه مى‌دانى ستاره‌ى شبگرد چيست"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن ستاره‌ى درخشان"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر اين كه نگهبانى بر او هست"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس بايد آدمى بنگرد كه از چه آفريده شده"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفريده شده است"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "كه از ميان ستون پشت و استخوان‌هاى سينه بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بى‌ترديد، خداوند بر بازگرداندن آن تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزى كه رازها فاش گردد"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس او را نه نيرويى باشد و نه ياورى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان [پر باران‌]"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و قسم به زمين شكاف پذير [براى رشد گياهان‌]"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "كه اين [قرآن‌] سخنى قاطع است"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و آن بيهوده و شوخى نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "به راستى آنها پيوسته حيله مى‌كنند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من نيز طرحى تدبير مى‌كنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده و آنان را اندكى به خودشان واگذار"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار والايت را به پاكى بستاى"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همان كه آفريد و سامان داد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آن كه تقدير كرد و هدايت نمود"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آن كه چراگاه را پديد آورد"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پس آن را خشك و تيره كرد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "به زودى تو را [به قرآن‌] خوانا كنيم كه فراموش نكنى"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا خواهد، كه بى‌گمان او آشكار و پنهان را مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و تو را براى آسان‌ترين راه آماده مى‌سازيم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس تذكر ده، اگر تذكر سود دهد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "به زودى كسى كه خدا ترس است پند خواهد گرفت"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و بدبخت‌ترين مردم از آن [پند] كناره مى‌گيرد"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان كه به بزرگ‌ترين آتش مى‌سوزد"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "آن‌گاه در آن آتش نه مى‌ميرد و نه زنده مى‌ماند"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "حقا كه هر كه پاكى جست، رستگار شد"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و نام پروردگارش را ذكر كرد و نماز گزارد"
        }
    ]
}