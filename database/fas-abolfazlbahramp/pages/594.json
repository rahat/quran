{
    "pages": [
        {
            "chapter": 89,
            "verse": 24,
            "text": "گويد: اى كاش براى اين زندگى‌ام چيزى فرستاده بودم"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس در آن روز هيچ كس مانند عذاب كردن او عذاب نمى‌كند"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و هيچ كس مانند بند كشيدن او به بند نمى‌كشد"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "تو اى جان آرام يافته، به اطمينان رسيده"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "به سوى پروردگارت بازگرد كه تو از او خشنود و او از تو خشنود است"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "پس به جمع بندگانم در آى"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و در بهشت من داخل شو"
        },
        {
            "chapter": 90,
            "verse": 1,
            "text": "سوگند به اين شهر [مكّه‌]"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "شهرى كه تو ساكن آن هستى"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "و قسم به پدر [ابراهيم‌]، و فرزندى كه آورد"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "كه ما انسان را در رنج آفريديم"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "آيا مى‌پندارد كه هيچ كس نمى‌تواند بر او دست يابد"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "مى‌گويد: مال انبوهى را نابود كردم"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "آيا مى‌پندارد كسى او را نديده"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "آيا براى او دو چشم نساختيم"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "و يك زبان و دو لب"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "و او را به دو راه مشخص ره نموديم"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "ولى او از آن گردنه بالا نرفت"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "و تو چه مى‌دانى آن گردنه چيست"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "آزاد كردن برده‌اى"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "يا اطعام به روز قحطى"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "به يتيمى خويشاوند"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "يا مستمندى خاك‌نشين"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "وانگهى از كسانى باشد كه ايمان آوردند و يكديگر را به صبر توصيه كرده و به ترحّم سفارش كردند"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "آنها اهل سعادتند"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "و آنها كه به آيات ما كافر شدند اهل شومى و شقاوتند"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "بر آنها آتشى سرپوشيده است [كه راه نفسى ندارد]"
        }
    ]
}