{
    "pages": [
        {
            "chapter": 92,
            "verse": 15,
            "text": "كه جز تيره بخت‌ترين مردم، بدان نسوزد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان كه تكذيب كرد و رخ برتافت"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "زودا كه پرهيزكارترين مردم، از آن دور داشته شود"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان كه مال خود را مى‌دهد تا پاك شود"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را نزد او حق نعمتى نيست تا او را پاداش دهد"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "جز طلب رضاى پروردگار والايش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و به زودى خشنود گردد"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "قسم به روز روشن"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "و به شب، آن دم كه آرام گيرد"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "كه پروردگارت نه تو را واگذاشته و نه دشمن داشته"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "و مسلما آخرت براى تو از دنيا بهتر است"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "و زود باشد كه پروردگارت [آنقدر] عطايت كند كه راضى شوى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "مگر نه يتيمت يافت و پناه داد"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "و سرگشته‌ات يافت پس راه نمود"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "و محتاجت يافت و بى‌نياز كرد"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "پس يتيم را خوار مدار و مران"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و با سائل خشونت مكن و مران"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از موهبت پروردگارت [رسالت و معارف‌] سخن گوى"
        },
        {
            "chapter": 94,
            "verse": 1,
            "text": "آيا ما سينه تو را فراخ نكرديم"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "و بار گرانت را از تو فرو نهاديم"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "كه پشتت را شكسته بود"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "و آوازه‌ات را بلند كرديم"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "پس بى‌ترديد با [هر] دشوارى آسانى است"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "[آرى‌] مسلما با [هر] دشوارى آسانى است"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "پس چون فراغت يافتى به [عبادت‌] كوش"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "و با اشتياق به سوى پروردگارت روى آور"
        }
    ]
}