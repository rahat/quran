{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "سوگند به اين شهر [مكّه‌]"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "شهرى كه تو ساكن آن هستى"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "و قسم به پدر [ابراهيم‌]، و فرزندى كه آورد"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "كه ما انسان را در رنج آفريديم"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "آيا مى‌پندارد كه هيچ كس نمى‌تواند بر او دست يابد"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "مى‌گويد: مال انبوهى را نابود كردم"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "آيا مى‌پندارد كسى او را نديده"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "آيا براى او دو چشم نساختيم"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "و يك زبان و دو لب"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "و او را به دو راه مشخص ره نموديم"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "ولى او از آن گردنه بالا نرفت"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "و تو چه مى‌دانى آن گردنه چيست"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "آزاد كردن برده‌اى"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "يا اطعام به روز قحطى"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "به يتيمى خويشاوند"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "يا مستمندى خاك‌نشين"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "وانگهى از كسانى باشد كه ايمان آوردند و يكديگر را به صبر توصيه كرده و به ترحّم سفارش كردند"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "آنها اهل سعادتند"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "و آنها كه به آيات ما كافر شدند اهل شومى و شقاوتند"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "بر آنها آتشى سرپوشيده است [كه راه نفسى ندارد]"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "سوگند به خورشيد و روشنايى آن"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "و به ماه چون از پى آن برآيد"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "و قسم به روز چون آن را هويدا سازد"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "و به شب وقتى كه آن را بپوشد [و آفاق را تاريك سازد]"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "و به آسمان و آنكه بنايش كرد"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "و به زمين و آن كه آن را گستراند"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "و سوگند به نفس آدمى و آنكه او را سامان داد"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "پس [تشخيص‌] فجور و تقوى را به وى الهام كرد"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "بى‌شك هر كه خود را تزكيه كرد رستگار شد"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "و بى‌گمان آنكه خود را بيالود، محروم گشت"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "ثمود از روى سركشى [پيامبرشان‌] را تكذيب كردند"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "آنگاه كه شقى‌ترين آنها به پاخاست"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "پس پيامبر خدا به آنها گفت ناقه خدا را با آب خوردنش [آزاد] گذاريد"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "ولى او را تكذيب نمودند و ناقه را پى كردند، پس خدا آنها را به گناهانشان بگرفت و با خاك يكسانشان كرد"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "و از عاقبت آن باكى نمى‌داشت"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "قسم به شب وقتى كه فراپوشد"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "و به روز آنگاه كه تجلى كند"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "و به آنكه نر و ماده را آفريد"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "كه سعى و تلاش شما بسى پراكنده است [و هر كس به راهى مى‌رود]"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "اما آنكه انفاق كرد و پارسائى نمود"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "و [وعده‌ى‌] نيكو را باور داشت"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "پس زودا كه راه آسانى پيش پاى او گذاريم"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "و اما آن كه بخل ورزيد و [از دين‌] بى‌نيازى نمود"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "و آن [وعده‌ى‌] نيكو را انكار كرد"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "پس زودا كه طريقه سختى پيش وى آريم"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "و آن‌گاه كه به هلاكت افتد، مالش به حال او سودى ندهد"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "همانا هدايت بر عهده‌ى ماست"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "و آخرت و دنيا هم متعلق به ماست"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "پس شما را به آتشى كه زبانه كشد بيم دادم"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "كه جز تيره بخت‌ترين مردم، بدان نسوزد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان كه تكذيب كرد و رخ برتافت"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "زودا كه پرهيزكارترين مردم، از آن دور داشته شود"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان كه مال خود را مى‌دهد تا پاك شود"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را نزد او حق نعمتى نيست تا او را پاداش دهد"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "جز طلب رضاى پروردگار والايش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و به زودى خشنود گردد"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "قسم به روز روشن"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "و به شب، آن دم كه آرام گيرد"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "كه پروردگارت نه تو را واگذاشته و نه دشمن داشته"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "و مسلما آخرت براى تو از دنيا بهتر است"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "و زود باشد كه پروردگارت [آنقدر] عطايت كند كه راضى شوى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "مگر نه يتيمت يافت و پناه داد"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "و سرگشته‌ات يافت پس راه نمود"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "و محتاجت يافت و بى‌نياز كرد"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "پس يتيم را خوار مدار و مران"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و با سائل خشونت مكن و مران"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از موهبت پروردگارت [رسالت و معارف‌] سخن گوى"
        }
    ]
}