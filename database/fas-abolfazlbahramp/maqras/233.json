{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "در باره‌ى چه چيز از يكديگر مى‌پرسند"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "در باره‌ى آن خبر بزرگ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "همان كه همواره در آن اختلاف دارند"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "چنين نيست [كه مى‌پندارند]، زودا كه بدانند"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "باز هم چنين نيست [كه مى‌پندارند]، زودا كه بدانند"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آيا زمين را آسايشگاه نكرديم"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و كوه‌ها را ميخ‌هاى [آن قرار نداديم‌]"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و شما را زوج‌ها آفريديم"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و خوابتان را مايه آسايش قرار داديم"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و شب را پوششى گردانيديم"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و روز را براى كسب و كار ساختيم"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و بر فراز شما هفت آسمان استوار بنا كرديم"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و [در آن‌] چراغى پرتو افشان نهاديم"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "و از ابرهاى فشرده آبى ريزان فرو فرستاديم"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا به وسيله آن، دانه و گياه بر آوريم"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و باغ‌هاى پردرخت"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "به يقين روز داورى زمان وعده است"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزى كه در صور دميده شود، پس گروه گروه بياييد"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "و آسمان گشوده شود، پس درهايى شود"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و كوه‌ها به راه انداخته شوند و سرابى گردند"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "بى‌ترديد دوزخ كمينگاهى شود"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "براى سركشان محل بازگشت است"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "كه روزگارانى دراز در آن بمانند"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "نه خنكى در آن مى‌چشند و نه نوشيدنى"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر آبى جوشان و خونابه"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "پاداشى است موافق كردار"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "چرا كه آنان هيچ حسابى را باور نداشتند"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و آيات ما را سخت دروغ مى‌شمردند"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "و حال آن كه ما همه چيز را به صورت مكتوب بر شمرده‌ايم"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "پس بچشيد كه هرگز جز عذابتان نيفزاييم"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "مسلما براى پارسايان كاميابى بزرگى است"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "باغ‌ها و انواع انگورها"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "و دختران نارپستان همسال"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "و جام‌هاى سرشار"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "نه سخن ناروا در آن مى‌شنوند و نه دروغى"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "پاداشى است از پروردگارت و بخششى است به حساب"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "پروردگار آسمان‌ها و زمين و آنچه ميان آنهاست، خداى رحمان كه [مردمان‌] را از جانب او ياراى سخن نباشد"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "روزى كه آن روح و فرشتگان به صف ايستند، سخن نگويند مگر كسى كه خداى رحمان به او اذن دهد و صواب را گويد [آنچه تصويب شده‌]"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "آن روز، روز حق است پس هر كه خواهد، به سوى پروردگارش بازگشتى پيش گيرد"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "همانا ما از عذابى نزديك بيمتان داديم، روزى كه شخص به آنچه پيش فرستاده بنگرد و كافر گويد: كاش خاك بودمى"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "سوگند به فرشتگانى كه به سختى [جان‌ها] را بر مى‌كنند"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "و فرشتگانى كه [جان مؤمنان‌] را بامدارا مى‌گيرند"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "و سوگند به فرشتگانى كه بسى تيزروند"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "پس بر يكديگر پيشى گيرند"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "و آنان كه امور را تدبير مى‌كنند"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "روزى كه آن زلزله [وحشتناك‌] همه چيز را بلرزاند"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "و در پى آن لرزه‌اى [ديگر] رخ دهد"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "دل‌هايى در آن روز مضطرب باشد"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "ديدگانشان هراسناك و فرو شكسته است"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "گويند: آيا ما به زندگى مجدد بازگردانده مى‌شويم"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "آيا وقتى كه استخوان‌هاى پوسيده‌اى شديم [دوباره باز مى‌گرديم‌]"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "گويند: در اين صورت آن باز گشتى زيانبار است"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "ولى اين بازگشت تنها با يك نهيب واقع مى‌شود"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "پس به ناگاه همگى بر عرصه محشر ظاهر مى‌شوند"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "آيا داستان موسى به تو رسيده است"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "آن وقت كه پروردگارش او را در وادى مقدس «طوى» ندا داد"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "به سوى فرعون برو كه او سر برداشته است"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "پس بگو: آيا مى‌خواهى پاكيزه شوى"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "و من تو را به سوى پروردگارت راه نمايم تا خدا ترس شوى"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "پس بزرگ‌ترين معجزه را به وى نشان داد"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "اما او تكذيب كرد و نافرمانى نمود"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "آن‌گاه روى گردانيد و دست به كار شد"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "[و مردم را] جمع كرد و فرياد بر آورد"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "پس گفت: من پروردگار برتر شمايم"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "پس خدا او را به كيفر آخرت و عذاب اين دنيا بگرفت"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "به راستى در اين [داستان‌] عبرتى است براى كسى كه بترسد"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "آيا آفرينش شما سخت‌تر است يا آسمان كه بنايش كرد"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "سقفش را برافراشت و آن را سامان داد"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "و شبش را تاريك و روزش را نمايان كرد"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "و پس از آن زمين را بگسترد"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "آب و چراگاهش را از آن بيرون آورد"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "و كوه‌ها را استوار نمود"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "تا شما و چهارپايانتان را بهره‌اى باشد"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "پس چون آن مصيبت بزرگ در رسد"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "آن روز است كه آدمى آنچه را كوشيده به ياد آورد"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "و دوزخ براى هر كسى ببيند ظاهر گردد"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "پس اما آن كه سركشى كرد"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "و زندگى پست‌تر را برگزيد"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "پس همانا دوزخ جايگاه اوست"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "و اما آن كس كه از مقام پروردگارش ترسان بود و خويشتن را از هوس‌ها بازداشت"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "پس همانا بهشت جايگاه اوست"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "از تو در باره‌ى رستاخيز مى‌پرسند كه برپائيش كى است"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "تو را با سخن گفتن در آن چه كار"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "سر انجام آن به جانب پروردگار توست"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "تو فقط بيم دهنده‌ى كسى هستى كه از آن بترسد"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "روزى كه آن را ببينند [پندارند كه‌]، گويى توقفشان [در دنيا] جز شامگاهى يا بامدادى بيش نبوده است"
        }
    ]
}