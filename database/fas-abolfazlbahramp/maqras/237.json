{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار والايت را به پاكى بستاى"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همان كه آفريد و سامان داد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آن كه تقدير كرد و هدايت نمود"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آن كه چراگاه را پديد آورد"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "پس آن را خشك و تيره كرد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "به زودى تو را [به قرآن‌] خوانا كنيم كه فراموش نكنى"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا خواهد، كه بى‌گمان او آشكار و پنهان را مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و تو را براى آسان‌ترين راه آماده مى‌سازيم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس تذكر ده، اگر تذكر سود دهد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "به زودى كسى كه خدا ترس است پند خواهد گرفت"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و بدبخت‌ترين مردم از آن [پند] كناره مى‌گيرد"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان كه به بزرگ‌ترين آتش مى‌سوزد"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "آن‌گاه در آن آتش نه مى‌ميرد و نه زنده مى‌ماند"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "حقا كه هر كه پاكى جست، رستگار شد"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و نام پروردگارش را ذكر كرد و نماز گزارد"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلكه شما زندگى دنيا را ترجيح مى‌دهيد"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "حال آن كه آخرت بهتر و پايدارتر است"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "همانا اين [گفتار] در كتب [رسولان‌] پيشين آمده است"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "[در] كتاب‌هاى ابراهيم و موسى"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آيا خبر آن بلاى فراگير به تو رسيده است"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "چهره‌هايى در آن روز ذلت بارند"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "عمل [بيهوده‌] كرده و رنج [آخرت‌] برده‌اند"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "[ناچار] به آتشى سوزان در آيند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از چشمه‌اى داغ نوشانده شوند"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "طعامى جز از خار تلخ ندارند"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "كه نه فربه كند و نه گرسنگى زدايد"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "چهره‌هايى در آن روز شاداب و متنعّمند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از سعى خود خشنودند"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشت برينند"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "در آن بيهوده‌اى نشنوند"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آن چشمه‌اى روان است"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آن جا تخت‌هايى است بلند"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و جام‌هايى [در كنار چشمه‌] نهاده"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و پشتى‌هايى به رديف چيده شده"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرش‌هايى فاخر گسترده است"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "چرا شتر را نمى‌نگرند كه چطور آفريده شده"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و به آسمان كه چگونه برافراشته شده"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و به كوه‌ها كه چسان ميخ كوب شده‌اند"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمين كه چگونه گسترده شده"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس پند ده كه تو تنها پند رسانى"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "تو بر كفار گماشته و مراقب نيستى"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر آنكس كه پشت كند و كافر شود"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "پس خدا او را به عذاب بزرگتر، عذاب مى‌كند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "همانا بازگشتشان به سوى ماست"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "و آن‌گاه حسابشان با ماست"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "به سپيده دم سوگند"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "و به شب‌هاى ده‌گانه"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "و به زوج و فرد"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "و به شب سوگند، آنگاه كه برود"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "آيا در آن براى خردمند سوگندى هست"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "آيا نديدى پروردگارت با قوم عاد چه كرد"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "با ارم كه داراى كاخ‌ها و ستون‌ها بود"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "كه نظيرش در بلاد ديگر ساخته نشده بود"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "و با قوم ثمود كه در آن وادى سنگ را مى‌بريدند"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "و با فرعون صاحب ميخ‌ها [ى شكنجه‌]"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "همان‌ها كه در شهرها طغيان كردند"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "و در آنها فساد را به اوج رساندند"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "پس پروردگارت تازيانه عذاب را بر سرشان كوفت"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "به تحقيق پروردگار تو البته در كمين است"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "اما آدمى را چون پروردگارش بيازمايد و او را گرامى داشته نعمتش دهد گويد: خدايم مرا گرامى داشت"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "و اما چون او را بيازمايد و روزيش را تنگ سازد پس گويد: پروردگارم مرا خوار كرد"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "چنين نيست [كه خيال مى‌كنيد] بلكه شما يتيمان را گرامى نمى‌داريد"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "و يكديگر را بر اطعام بينوايان ترغيب نمى‌كنيد"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "و ميراث [ضعيفان‌] را يكجا مى‌خوريد"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "و مال را بسيار دوست مى‌داريد [در حد دلباختگى‌]"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "چه خيال مى‌كنيد، وقتى كه زمين درهم شكست و به سختى متلاشى گرديد"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "و [فرمان‌] پروردگارت فرا رسيد و فرشتگان صف در صف حاضر شدند"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "و در آن روز جهنم را حاضر كنند، آن زمان است كه انسان بيدار شود، اما از اين بيدارى او را چه سود؟"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "گويد: اى كاش براى اين زندگى‌ام چيزى فرستاده بودم"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس در آن روز هيچ كس مانند عذاب كردن او عذاب نمى‌كند"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و هيچ كس مانند بند كشيدن او به بند نمى‌كشد"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "تو اى جان آرام يافته، به اطمينان رسيده"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "به سوى پروردگارت بازگرد كه تو از او خشنود و او از تو خشنود است"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "پس به جمع بندگانم در آى"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و در بهشت من داخل شو"
        }
    ]
}