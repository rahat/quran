{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "مگر نمى‌داند وقتى كه خفتگان قبور برخيزند"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "و آنچه [از كفر و ايمان‌] در سينه‌هاست فاش گردد"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "در آن روز پروردگارشان به آنها كاملا آگاه است"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "آن واقعه كوبنده"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چه كوبنده‌اى! [كه قابل وصف نيست‌]"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه مى‌دانى آن كوبنده چيست"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزى كه مردم مانند پروانگان پراكنده باشند"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و كوه‌ها چون پشم رنگين حلاجى شده شوند"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "پس اما هر كه وزنه اعمالش سنگين باشد"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "پس وى در يك زندگى رضايت بخشى است"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما آنكه وزنه اعمالش سبك شود"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "پس جايگاهش هاويه است"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو چه مى‌دانى آن چيست"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشى سوزنده است"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "تفاخر و افزون طلبى، شما را سرگرم ساخت"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا وقتى كه به ديدار گورها رفتيد"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "چنين نيست [كه مى‌پنداريد]، به زودى خواهيد دانست [نتيجه غفلت را]"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "باز چنين نيست، [كه مى‌پنداريد] به زودى خواهيد دانست"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "چنين نيست [كه مى‌پنداريد] اگر شما به علم يقينى مى‌دانستيد [كه آخرتى هست‌]"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "به يقين جهنم را مى‌ديديد"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "سپس يقينا آن دوزخ را به ديده‌ى يقين [و لمس‌] مشاهده مى‌كرديد"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "و آنگاه آن روز از اين نعمت بازخواست مى‌شويد"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "قسم به عصر"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "كه انسان‌ها همه در زيانند"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "مگر آنها كه ايمان آورده و اعمال شايسته كردند و يكديگر را به حق سفارش نمودند و به صبر توصيه كردند"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "واى بر هر بدگوى كننده‌ى عيبجوى"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "آنكه مالى فراهم كرد و بر شمرد"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "مى‌پندارد كه مالش او را جاويد كند"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "چنين نيست [كه مى‌پندارد]، حتما در آتشى شكننده افكنده شود"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "و تو چه مى‌دانى آتش شكننده چيست"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "آتش برافروخته الهى است"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "آتشى كه بر دل‌ها افتد و زبانه كشد"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "اين آتش بر آنها سرپوش است [و راه گريز ندارد]"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "در ستون‌هايى است كشيده شده"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "آيا نديدى پروردگارت با پيلداران چه كرد"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "آيا نقشه آنها را باطل نساخت"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "و بر سرشان پرندگان گروهى را فرستاد"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "كه با سنگ‌هايى از سجّيل آنها را هدف قرار مى‌دادند"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "پس آنها را همچون كاه جويده شده [متلاشى‌] گردانيد"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "[شكست ابرهه‌] براى اين بود كه قريش [به كعبه‌] الفت گيرند"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "الفتشان به سفرهاى [تجارى‌] زمستانى و تابستانى [ادامه يابد]"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس بايد صاحب اين خانه را پرستش كنند"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "همان كه آنها را از گرسنگى سيرشان كرد و از بيم [دشمن‌] ايمنشان ساخت"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آيا آن كس را كه دين را تكذيب مى‌كند ديدى"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "پس او همانست كه يتيم را به خشونت مى‌راند"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و بر اطعام بينوا، ترغيب نمى‌كند"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس واى بر نمازگزاران"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "آنان كه از نمازشان غافلند"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "آنها كه خودنمايى مى‌كنند"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و از رفع نياز ديگران دريغ مى‌ورزند"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "بى‌ترديد ما به تو خير بسيار داديم"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس براى پروردگارت نمازگزار و قربانى كن"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "البته دشمن تو، همو بى‌نسل است"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "بگو هان! اى كافران"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "من آنچه را كه مى‌پرستيد، نمى‌پرستم"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "و شما [نيز] پرستش‌گر آنچه مى‌پرستم نيستيد"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "و من [نيز] پرستشگر آنچه [شما] پرستيده‌ايد نيستم"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "و نه شما پرستنده‌ى چيزى هستيد كه [من‌] مى‌پرستم"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "شما را دين خودتان و مرا دين خويش"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "آن‌گاه كه يارى خدا و پيروزى فرا رسيد"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "و ديدى كه مردم گروه گروه در دين خدا داخل مى‌شوند"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "پس به ستايش پروردگارت تسبيح گوى و آمرزش خواه كه او قطعا توبه پذير است"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "بريده باد هر دو دست ابو لهب و مرگ بر او"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "مال و دست آوردش او را بى‌نياز نكرد"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "زودا كه وارد آتشى شعله‌ور شود"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "و همسر او [نيز]، كه باركش هيزم است"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "به گردنش ريسمانى از ليف خرما است"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "بگو حق اين است كه خدا يگانه است"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "خدايى كه همه، نياز بدو برند"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "نزاده و زاده نشده است"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و او را هيچ همتايى نباشد"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "بگو به پروردگار سپيده دم پناه مى‌برم"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از شرّ آنچه آفريد"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از شرّ شب تار، وقتى كه هجوم آورد"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از شرّ دمندگان در گروه‌ها"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "و از شرّ حسود آن‌گاه كه حسد ورزد"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "بگو پناه مى‌برم به پروردگار مردم"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "به فرمانرواى مردم"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "به معبود مردم"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از شرّ وسوسه‌گر پنهان شونده [و بازگردنده‌]"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "آن كه در سينه‌هاى مردم وسوسه مى‌كند"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "از پريان و آدميان"
        }
    ]
}