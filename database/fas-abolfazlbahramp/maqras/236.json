{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "آن‌گاه كه آسمان بشكافد"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "و فرمان پروردگار خويش برد و حق همين است"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "و آن‌گاه كه زمين كشيده شود"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "و آنچه را درون خود دارد بيرون افكند و تهى شود"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "و فرمان پروردگار خويش برد و حق همين باشد"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "اى انسان! مسلما تو با تلاش و رنجى فراوان به سوى پروردگارت مى‌روى، پس ديدارش خواهى كرد"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "پس آن كه كارنامه‌اش به دست راستش داده شود"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "پس زودا كه با حسابى آسان محاسبه شود"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "و خوشحال نزد كسان خويش بازگردد"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "و اما آن كه كارنامه‌اش از پشت سرش به او داده شود"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "پس زودا كه فريادش بلند شود كه واى بر من"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "و در آتش در آيد"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "كه وى [در دنيا] ميان كسان خويش [از گناه‌] شادمان بود"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "او مى‌پنداشت كه هرگز بازگشتى نخواهد داشت"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "چرا، به راستى پروردگارش به او بينا بود"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "پس سوگند به شفق"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "سوگند به شب و آنچه را در بر گيرد"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "سوگند به ماه آن‌گاه كه كامل شود"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "كه شما حالات و منازلى را پشت سر مى‌گذاريد [حيات و مرگ و قيامت و حساب‌]"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "پس آنها را چه شده است كه ايمان نمى‌آورند"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "و چون قرآن بر آنها خوانده شود سجده نمى‌كنند"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "نه، بلكه كافران [همواره‌] تكذيب مى‌كنند"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "و خدا بهتر داند كه در خاطر چه دارند"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "پس به عذاب دردناكى بشارتشان ده"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "مگر كسانى كه ايمان آوردند و اعمال شايسته كردند كه ايشان را پاداشى بى‌پايان است"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "قسم به آسمان كه برج‌ها دارد"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "و قسم به روز موعود"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "و قسم به شاهد و مشهود [كه همه در ديدگاهند]"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "مرگ بر آدم سوزان خندق"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "[خندق‌هاى‌] پر از آتش"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "آن وقت كه كنار آن نشسته بودند"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "و نظاره‌گر شكنجه‌اى بودند كه بر مؤمنان مى‌رفت"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "و از آنها انتقام نمى‌گرفتند جز اين كه آنان به خداى شكست ناپذير ستوده ايمان آورده بودند"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "خدايى كه حكومت آسمان‌ها و زمين خاص اوست، و خدا بر همه چيز شاهد است"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "همانا كسانى كه مردان و زنان مؤمن را آزردند، سپس از آن باز نگشتند، عذاب دوزخ و عذاب آتش سوزان براى آنهاست"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "همانا كسانى كه ايمان آوردند و اعمال شايسته انجام دادند، برايشان باغ‌هايى است كه نهرها از زير درختان آن جارى است. اين است آن كاميابى بزرگ"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "همانا صلابت قهرآميز پروردگارت شديد است"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "همانا اوست كه خلق را پديد مى‌آورد و همو باز مى‌گرداند"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "و اوست آمرزگار و دوستدار [مؤمنان‌]"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "و صاحب ارجمند عرش"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "آنچه را بخواهد كننده است"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "آيا خبر آن سپاهيان به تو رسيده است"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "سپاه فرعون و ثمود"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "بلى، كافران همواره در حال تكذيبند"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "و خدا از هر سو به آنها احاطه دارد"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "آرى، اين قرآن ارجمند است"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "كه در لوح محفوظ است"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "قسم به آسمان و آن ستاره‌ى شبگرد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه مى‌دانى ستاره‌ى شبگرد چيست"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن ستاره‌ى درخشان"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر اين كه نگهبانى بر او هست"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس بايد آدمى بنگرد كه از چه آفريده شده"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفريده شده است"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "كه از ميان ستون پشت و استخوان‌هاى سينه بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بى‌ترديد، خداوند بر بازگرداندن آن تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزى كه رازها فاش گردد"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس او را نه نيرويى باشد و نه ياورى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان [پر باران‌]"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و قسم به زمين شكاف پذير [براى رشد گياهان‌]"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "كه اين [قرآن‌] سخنى قاطع است"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و آن بيهوده و شوخى نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "به راستى آنها پيوسته حيله مى‌كنند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من نيز طرحى تدبير مى‌كنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده و آنان را اندكى به خودشان واگذار"
        }
    ]
}