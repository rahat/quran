{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "رو ترش كرد و رخ برتافت"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "كه آن نابينا نزد وى آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانى؟ شايد او پاك شود"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "يا پند گيرد و آن پند سودش دهد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن كه [از پند تو] اظهار بى‌نيازى مى‌كند"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو به او مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و اگر هم پاك نشود، گناهى بر تو نيست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن كه شتابان به سويت آمده"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالى كه از خدا مى‌ترسد"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او به ديگرى مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "چنين مپندار، كه اين [آيات‌] تذكارى است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر كه خواهد آن را ياد كند"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "[كه‌] در صحيفه‌هايى ارجمند"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "والا و پاكيزه"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست سفيرانى"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "گرامى و نيكوكار است"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر اين انسان، چقدر حق پوش و ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "خدا او را از چه چيزى آفريده"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "او را از نطفه‌اى آفريد و موزونش ساخت"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "آن‌گاه راه [ايمان و اطاعت‌] را بر او آسان كرد"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "سپس وى را بميراند و به گورش برد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هر وقت بخواهد زنده‌اش مى‌كند"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ولى نه! هنوز [انسان‌] آنچه را كه خدايش فرمان داده به جا نياورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس آدمى بايد طعام خويش را بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "به تحقيق ما آب فراوانى [از آسمان‌] فرو ريختيم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمين را از هم شكافتيم، شكافتنى"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "و در آن دانه‌ها برويانديم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگور و سبزى"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زيتون و خرما"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌هاى پردرخت"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و ميوه و علفزار"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تا متاعى براى شما و چهارپايانتان باشد"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون آن صيحه گوش خراش در رسد"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى كه آدمى از برادرش بگريزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادر و پدرش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از همسر و فرزندانش"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز هر كسى از مردم وضعى دارد كه به خود مشغولش سازد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "آن روز بعضى چهره‌ها باز و روشن‌اند"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شادمانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و برخى چهره‌ها آن روز [گرفته‌اند و] بر آنها غبار [اندوه‌] نشسته است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تيرگى و سياهى آنها را پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "آنان همان كافران بدكارند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "آن‌گاه كه خورشيد درهم پيچيده شود"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و آن‌گاه كه ستارگان تيره شوند [و فرو ريزند]"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و آن‌گاه كه كوه‌ها به راه افتند [و خرد شوند]"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و آن‌گاه كه شتران آبستن وا نهاده شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و آن‌گاه كه درندگان گرد آورده شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و آن‌گاه كه درياها بجوشند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و آن‌گاه كه جان‌ها جفت شوند [و با قرين خود همراه گردند]"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و آن‌گاه كه از دختر زنده به گور پرسيده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "كه به كدامين گناه كشته شده است"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و آن‌گاه كه نامه‌هاى اعمال گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و آن‌گاه كه آسمان بركنده شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و آن‌گاه كه دوزخ شعله‌ور گردد"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و آن‌گاه كه بهشت نزديك آورده شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "[در آن روز] هر كس داند چه حاضر كرده است"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند به اختران بازگردنده"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "كه مى‌روند و نهان مى‌شوند"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "و سوگند به شب، آن‌گاه كه پشت كند"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و سوگند به صبح چون بردمد"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "كه قطعا اين قرآن سخن فرستاده‌اى ارجمند است (جبرئيل)"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "نيرومندى كه نزد خداوند عرش، منزلت والايى دارد"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "در آن جا فرمانروا و امين است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و اين رفيق شما ديوانه نيست"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "او [جبرئيل‌] را در افق روشن ديده است"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او در [ابلاغ‌] وحى بخيل نيست"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و اين [قرآن‌] سخن شيطان مطرود نيست"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس به كجا مى‌رويد"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "اين جز تذكارى براى جهانيان نيست"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "براى هر كس از شما كه خواهد راست و مستقيم شود"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و شما نمى‌خواهيد مگر آن كه خدا، پروردگار جهانيان، بخواهد"
        }
    ]
}