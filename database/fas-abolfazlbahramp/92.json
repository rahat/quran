{
    "chapter": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "قسم به شب وقتى كه فراپوشد"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "و به روز آنگاه كه تجلى كند"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "و به آنكه نر و ماده را آفريد"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "كه سعى و تلاش شما بسى پراكنده است [و هر كس به راهى مى‌رود]"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "اما آنكه انفاق كرد و پارسائى نمود"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "و [وعده‌ى‌] نيكو را باور داشت"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "پس زودا كه راه آسانى پيش پاى او گذاريم"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "و اما آن كه بخل ورزيد و [از دين‌] بى‌نيازى نمود"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "و آن [وعده‌ى‌] نيكو را انكار كرد"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "پس زودا كه طريقه سختى پيش وى آريم"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "و آن‌گاه كه به هلاكت افتد، مالش به حال او سودى ندهد"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "همانا هدايت بر عهده‌ى ماست"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "و آخرت و دنيا هم متعلق به ماست"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "پس شما را به آتشى كه زبانه كشد بيم دادم"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "كه جز تيره بخت‌ترين مردم، بدان نسوزد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان كه تكذيب كرد و رخ برتافت"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "زودا كه پرهيزكارترين مردم، از آن دور داشته شود"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان كه مال خود را مى‌دهد تا پاك شود"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را نزد او حق نعمتى نيست تا او را پاداش دهد"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "جز طلب رضاى پروردگار والايش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و به زودى خشنود گردد"
        }
    ]
}