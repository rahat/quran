{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "در باره‌ى چه چيز از يكديگر مى‌پرسند"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "در باره‌ى آن خبر بزرگ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "همان كه همواره در آن اختلاف دارند"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "چنين نيست [كه مى‌پندارند]، زودا كه بدانند"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "باز هم چنين نيست [كه مى‌پندارند]، زودا كه بدانند"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آيا زمين را آسايشگاه نكرديم"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و كوه‌ها را ميخ‌هاى [آن قرار نداديم‌]"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و شما را زوج‌ها آفريديم"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و خوابتان را مايه آسايش قرار داديم"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و شب را پوششى گردانيديم"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و روز را براى كسب و كار ساختيم"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و بر فراز شما هفت آسمان استوار بنا كرديم"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و [در آن‌] چراغى پرتو افشان نهاديم"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "و از ابرهاى فشرده آبى ريزان فرو فرستاديم"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا به وسيله آن، دانه و گياه بر آوريم"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و باغ‌هاى پردرخت"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "به يقين روز داورى زمان وعده است"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزى كه در صور دميده شود، پس گروه گروه بياييد"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "و آسمان گشوده شود، پس درهايى شود"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و كوه‌ها به راه انداخته شوند و سرابى گردند"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "بى‌ترديد دوزخ كمينگاهى شود"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "براى سركشان محل بازگشت است"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "كه روزگارانى دراز در آن بمانند"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "نه خنكى در آن مى‌چشند و نه نوشيدنى"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "مگر آبى جوشان و خونابه"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "پاداشى است موافق كردار"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "چرا كه آنان هيچ حسابى را باور نداشتند"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و آيات ما را سخت دروغ مى‌شمردند"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "و حال آن كه ما همه چيز را به صورت مكتوب بر شمرده‌ايم"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "پس بچشيد كه هرگز جز عذابتان نيفزاييم"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "مسلما براى پارسايان كاميابى بزرگى است"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "باغ‌ها و انواع انگورها"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "و دختران نارپستان همسال"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "و جام‌هاى سرشار"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "نه سخن ناروا در آن مى‌شنوند و نه دروغى"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "پاداشى است از پروردگارت و بخششى است به حساب"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "پروردگار آسمان‌ها و زمين و آنچه ميان آنهاست، خداى رحمان كه [مردمان‌] را از جانب او ياراى سخن نباشد"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "روزى كه آن روح و فرشتگان به صف ايستند، سخن نگويند مگر كسى كه خداى رحمان به او اذن دهد و صواب را گويد [آنچه تصويب شده‌]"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "آن روز، روز حق است پس هر كه خواهد، به سوى پروردگارش بازگشتى پيش گيرد"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "همانا ما از عذابى نزديك بيمتان داديم، روزى كه شخص به آنچه پيش فرستاده بنگرد و كافر گويد: كاش خاك بودمى"
        }
    ]
}