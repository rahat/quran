{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Da zai de xiaoxi, que yi jianglin nile,"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "zai na ri, jiang you xuduo ren, shi gongjing de,"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "laodong de, xinku de,"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "tamen jiang ru liehuo,"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "jiang yin fei quan,"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "tamen meiyou shiwu, dan you jingji,"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "ji buneng fei ren, you buneng chongji;"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "zai na ri, jiang you xuduo ren, shi xiangfu de,"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "shi wei qi laoji er yukuai de,"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "tamen jiang zai chonggao de leyuan zhong,"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "ting bu dao e yan,"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "limian you liu quan,"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "limian you gao ta,"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "you chenshezhe de bei zhan,"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "you pailiezhe de kaozhen,"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "you puzhankai de rongtan."
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Nandao tamen bu guancha ma? Luotuo shi zenyang zaocheng de,"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "tian shi zenyang sheng gao de,"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "shanluan shi zenyang shu qi de,"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "dadi shi zenyang zhan kai de."
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ni dang jiaohui, ni zhishi jiaohui (tamen de),"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ni jue bushi jiancha tamen de,"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "dan shui zhuanshen li qu erqie bu xindao,"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "zhenzhu jiang yi zuida de xingfa chengzhi shui."
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Tamen biding zhi guiyu wo,"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "tamen de jihe, biding you wo fuze."
        }
    ]
}