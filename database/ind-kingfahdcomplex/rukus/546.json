{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Kecelakaanlah bagi setiap pengumpat lagi pencela"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "yang mengumpulkan harta dan menghitung-hitungnya"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "dia mengira bahwa hartanya itu dapat mengekalkannya"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "sekali-kali tidak! Sesungguhnya dia benar-benar akan dilemparkan ke dalam ῌuṭamah"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Dan tahukah kamu apa ῌuṭamah itu"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "(Yaitu) api (yang disediakan) Allah yang dinyalakan"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "yang (membakar) sampai ke hati"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Sesungguhnya api itu ditutup rapat atas mereka"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(sedang mereka itu) diikat pada tiang-tiang yang panjang"
        }
    ]
}