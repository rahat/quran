{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Tahukah kamu (orang) yang mendustakan agama"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Itulah orang yang menghardik anak yatim"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "dan tidak menganjurkan memberi makan orang miskin"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Maka kecelakaanlah bagi orang-orang yang salat"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(yaitu) orang-orang yang lalai dari salatnya"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "orang-orang yang berbuat ria"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "dan enggan (menolong dengan) barang berguna"
        }
    ]
}