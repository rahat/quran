{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "Waalssaffati saffan"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "Faalzzajirati zajran"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "Faalttaliyati thikran"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "Inna ilahakum lawahidun"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "Rabbu alssamawati waalardi wama baynahuma warabbu almashariqi"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "Inna zayyanna alssamaa alddunya bizeenatin alkawakibi"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "Wahifthan min kulli shaytanin maridin"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "La yassammaAAoona ila almalai alaAAla wayuqthafoona min kulli janibin"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "Duhooran walahum AAathabun wasibun"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "Illa man khatifa alkhatfata faatbaAAahu shihabun thaqibun"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "Faistaftihim ahum ashaddu khalqan am man khalaqna inna khalaqnahum min teenin lazibin"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "Bal AAajibta wayaskharoona"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "Waitha thukkiroo la yathkuroona"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "Waitha raaw ayatan yastaskhiroona"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "Waqaloo in hatha illa sihrun mubeenun"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "Aitha mitna wakunna turaban waAAithaman ainna lamabAAoothoona"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "Awaabaona alawwaloona"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "Qul naAAam waantum dakhiroona"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "Fainnama hiya zajratun wahidatun faitha hum yanthuroona"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "Waqaloo ya waylana hatha yawmu alddeeni"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "Hatha yawmu alfasli allathee kuntum bihi tukaththiboona"
        }
    ]
}