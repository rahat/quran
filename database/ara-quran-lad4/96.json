{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "iq'ra bi-is'mi rabbika alladhī khalaqa"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "khalaqa l-insāna min ʿalaqin"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "iq'ra warabbuka l-akramu"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "alladhī ʿallama bil-qalami"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "ʿallama l-insāna mā lam yaʿlam"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "kallā inna l-insāna layaṭghā"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "an raāhu is'taghnā"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "inna ilā rabbika l-ruj'ʿā"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "ara-ayta alladhī yanhā"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "ʿabdan idhā ṣallā"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "ara-ayta in kāna ʿalā l-hudā"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "aw amara bil-taqwā"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "ara-ayta in kadhaba watawallā"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "alam yaʿlam bi-anna l-laha yarā"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "kallā la-in lam yantahi lanasfaʿan bil-nāṣiyati"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "nāṣiyatin kādhibatin khāṭi-atin"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "falyadʿu nādiyahu"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "sanadʿu l-zabāniyata"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "kallā lā tuṭiʿ'hu wa-us'jud wa-iq'tarib"
        }
    ]
}