{
    "rukus": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "uḥ'shurū alladhīna ẓalamū wa-azwājahum wamā kānū yaʿbudūna"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "min dūni l-lahi fa-ih'dūhum ilā ṣirāṭi l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "waqifūhum innahum masūlūna"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "mā lakum lā tanāṣarūna"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "bal humu l-yawma mus'taslimūna"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "wa-aqbala baʿḍuhum ʿalā baʿḍin yatasāalūna"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "qālū innakum kuntum tatūnanā ʿani l-yamīni"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "qālū bal lam takūnū mu'minīna"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "wamā kāna lanā ʿalaykum min sul'ṭānin bal kuntum qawman ṭāghīna"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "faḥaqqa ʿalaynā qawlu rabbinā innā ladhāiqūna"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "fa-aghwaynākum innā kunnā ghāwīna"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "fa-innahum yawma-idhin fī l-ʿadhābi mush'tarikūna"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "innā kadhālika nafʿalu bil-muj'rimīna"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "innahum kānū idhā qīla lahum lā ilāha illā l-lahu yastakbirūna"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "wayaqūlūna a-innā latārikū ālihatinā lishāʿirin majnūnin"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "bal jāa bil-ḥaqi waṣaddaqa l-mur'salīna"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "innakum ladhāiqū l-ʿadhābi l-alīmi"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "wamā tuj'zawna illā mā kuntum taʿmalūna"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "illā ʿibāda l-lahi l-mukh'laṣīna"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "ulāika lahum riz'qun maʿlūmun"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "fawākihu wahum muk'ramūna"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "fī jannāti l-naʿīmi"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "ʿalā sururin mutaqābilīna"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "yuṭāfu ʿalayhim bikasin min maʿīnin"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "bayḍāa ladhatin lilshāribīna"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "lā fīhā ghawlun walā hum ʿanhā yunzafūna"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "waʿindahum qāṣirātu l-ṭarfi ʿīnun"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "ka-annahunna bayḍun maknūnun"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "fa-aqbala baʿḍuhum ʿalā baʿḍin yatasāalūna"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "qāla qāilun min'hum innī kāna lī qarīnun"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "yaqūlu a-innaka lamina l-muṣadiqīna"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "a-idhā mit'nā wakunnā turāban waʿiẓāman a-innā lamadīnūna"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "qāla hal antum muṭṭaliʿūna"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "fa-iṭṭalaʿa faraāhu fī sawāi l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "qāla tal-lahi in kidtta latur'dīni"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "walawlā niʿ'matu rabbī lakuntu mina l-muḥ'ḍarīna"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "afamā naḥnu bimayyitīna"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "illā mawtatanā l-ūlā wamā naḥnu bimuʿadhabīna"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "inna hādhā lahuwa l-fawzu l-ʿaẓīmu"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "limith'li hādhā falyaʿmali l-ʿāmilūna"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "adhālika khayrun nuzulan am shajaratu l-zaqūmi"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "innā jaʿalnāhā fit'natan lilẓẓālimīna"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "innahā shajaratun takhruju fī aṣli l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "ṭalʿuhā ka-annahu ruūsu l-shayāṭīni"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "fa-innahum laākilūna min'hā famāliūna min'hā l-buṭūna"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "thumma inna lahum ʿalayhā lashawban min ḥamīmin"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "thumma inna marjiʿahum la-ilā l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "innahum alfaw ābāahum ḍāllīna"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "fahum ʿalā āthārihim yuh'raʿūna"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "walaqad ḍalla qablahum aktharu l-awalīna"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "walaqad arsalnā fīhim mundhirīna"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "fa-unẓur kayfa kāna ʿāqibatu l-mundharīna"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "illā ʿibāda l-lahi l-mukh'laṣīna"
        }
    ]
}