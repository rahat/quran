{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "idhā l-samāu infaṭarat"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "wa-idhā l-kawākibu intatharat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "wa-idhā l-biḥāru fujjirat"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "wa-idhā l-qubūru buʿ'thirat"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "ʿalimat nafsun mā qaddamat wa-akharat"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "yāayyuhā l-insānu mā gharraka birabbika l-karīmi"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "alladhī khalaqaka fasawwāka faʿadalaka"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "fī ayyi ṣūratin mā shāa rakkabaka"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "kallā bal tukadhibūna bil-dīni"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "wa-inna ʿalaykum laḥāfiẓīna"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "kirāman kātibīna"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "yaʿlamūna mā tafʿalūna"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "inna l-abrāra lafī naʿīmin"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "wa-inna l-fujāra lafī jaḥīmin"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "yaṣlawnahā yawma l-dīni"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "wamā hum ʿanhā bighāibīna"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "wamā adrāka mā yawmu l-dīni"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "thumma mā adrāka mā yawmu l-dīni"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "yawma lā tamliku nafsun linafsin shayan wal-amru yawma-idhin lillahi"
        }
    ]
}