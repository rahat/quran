{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "lā uq'simu biyawmi l-qiyāmati"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "walā uq'simu bil-nafsi l-lawāmati"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "ayaḥsabu l-insānu allan najmaʿa ʿiẓāmahu"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "balā qādirīna ʿalā an nusawwiya banānahu"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "bal yurīdu l-insānu liyafjura amāmahu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "yasalu ayyāna yawmu l-qiyāmati"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "fa-idhā bariqa l-baṣaru"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "wakhasafa l-qamaru"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "wajumiʿa l-shamsu wal-qamaru"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "yaqūlu l-insānu yawma-idhin ayna l-mafaru"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "kallā lā wazara"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "ilā rabbika yawma-idhin l-mus'taqaru"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "yunabba-u l-insānu yawma-idhin bimā qaddama wa-akhara"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "bali l-insānu ʿalā nafsihi baṣīratun"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "walaw alqā maʿādhīrahu"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "lā tuḥarrik bihi lisānaka litaʿjala bihi"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "inna ʿalaynā jamʿahu waqur'ānahu"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "fa-idhā qaranāhu fa-ittabiʿ qur'ānahu"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "thumma inna ʿalaynā bayānahu"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "kallā bal tuḥibbūna l-ʿājilata"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "watadharūna l-ākhirata"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "wujūhun yawma-idhin nāḍiratun"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "ilā rabbihā nāẓiratun"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "wawujūhun yawma-idhin bāsiratun"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "taẓunnu an yuf'ʿala bihā fāqiratun"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "kallā idhā balaghati l-tarāqiya"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "waqīla man rāqin"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "waẓanna annahu l-firāqu"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "wal-tafati l-sāqu bil-sāqi"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "ilā rabbika yawma-idhin l-masāqu"
        }
    ]
}