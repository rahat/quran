{
    "rukus": [
        {
            "chapter": 68,
            "verse": 34,
            "text": "inna lil'muttaqīna ʿinda rabbihim jannāti l-naʿīmi"
        },
        {
            "chapter": 68,
            "verse": 35,
            "text": "afanajʿalu l-mus'limīna kal-muj'rimīna"
        },
        {
            "chapter": 68,
            "verse": 36,
            "text": "mā lakum kayfa taḥkumūna"
        },
        {
            "chapter": 68,
            "verse": 37,
            "text": "am lakum kitābun fīhi tadrusūna"
        },
        {
            "chapter": 68,
            "verse": 38,
            "text": "inna lakum fīhi lamā takhayyarūna"
        },
        {
            "chapter": 68,
            "verse": 39,
            "text": "am lakum aymānun ʿalaynā bālighatun ilā yawmi l-qiyāmati inna lakum lamā taḥkumūna"
        },
        {
            "chapter": 68,
            "verse": 40,
            "text": "salhum ayyuhum bidhālika zaʿīmun"
        },
        {
            "chapter": 68,
            "verse": 41,
            "text": "am lahum shurakāu falyatū bishurakāihim in kānū ṣādiqīna"
        },
        {
            "chapter": 68,
            "verse": 42,
            "text": "yawma yuk'shafu ʿan sāqin wayud'ʿawna ilā l-sujūdi falā yastaṭīʿūna"
        },
        {
            "chapter": 68,
            "verse": 43,
            "text": "khāshiʿatan abṣāruhum tarhaquhum dhillatun waqad kānū yud'ʿawna ilā l-sujūdi wahum sālimūna"
        },
        {
            "chapter": 68,
            "verse": 44,
            "text": "fadharnī waman yukadhibu bihādhā l-ḥadīthi sanastadrijuhum min ḥaythu lā yaʿlamūna"
        },
        {
            "chapter": 68,
            "verse": 45,
            "text": "wa-um'lī lahum inna kaydī matīnun"
        },
        {
            "chapter": 68,
            "verse": 46,
            "text": "am tasaluhum ajran fahum min maghramin muth'qalūna"
        },
        {
            "chapter": 68,
            "verse": 47,
            "text": "am ʿindahumu l-ghaybu fahum yaktubūna"
        },
        {
            "chapter": 68,
            "verse": 48,
            "text": "fa-iṣ'bir liḥuk'mi rabbika walā takun kaṣāḥibi l-ḥūti idh nādā wahuwa makẓūmun"
        },
        {
            "chapter": 68,
            "verse": 49,
            "text": "lawlā an tadārakahu niʿ'matun min rabbihi lanubidha bil-ʿarāi wahuwa madhmūmun"
        },
        {
            "chapter": 68,
            "verse": 50,
            "text": "fa-ij'tabāhu rabbuhu fajaʿalahu mina l-ṣāliḥīna"
        },
        {
            "chapter": 68,
            "verse": 51,
            "text": "wa-in yakādu alladhīna kafarū layuz'liqūnaka bi-abṣārihim lammā samiʿū l-dhik'ra wayaqūlūna innahu lamajnūnun"
        },
        {
            "chapter": 68,
            "verse": 52,
            "text": "wamā huwa illā dhik'run lil'ʿālamīna"
        }
    ]
}