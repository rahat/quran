{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "wal-ṭūri"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "wakitābin masṭūrin"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "fī raqqin manshūrin"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "wal-bayti l-maʿmūri"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "wal-saqfi l-marfūʿi"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "wal-baḥri l-masjūri"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "inna ʿadhāba rabbika lawāqiʿun"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "mā lahu min dāfiʿin"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "yawma tamūru l-samāu mawran"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "watasīru l-jibālu sayran"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "fawaylun yawma-idhin lil'mukadhibīna"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "alladhīna hum fī khawḍin yalʿabūna"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "yawma yudaʿʿūna ilā nāri jahannama daʿʿan"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "hādhihi l-nāru allatī kuntum bihā tukadhibūna"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "afasiḥ'run hādhā am antum lā tub'ṣirūna"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "iṣ'lawhā fa-iṣ'birū aw lā taṣbirū sawāon ʿalaykum innamā tuj'zawna mā kuntum taʿmalūna"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "inna l-mutaqīna fī jannātin wanaʿīmin"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "fākihīna bimā ātāhum rabbuhum wawaqāhum rabbuhum ʿadhāba l-jaḥīmi"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "kulū wa-ish'rabū hanīan bimā kuntum taʿmalūna"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "muttakiīna ʿalā sururin maṣfūfatin wazawwajnāhum biḥūrin ʿīnin"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "wa-alladhīna āmanū wa-ittabaʿathum dhurriyyatuhum biīmānin alḥaqnā bihim dhurriyyatahum wamā alatnāhum min ʿamalihim min shayin kullu im'ri-in bimā kasaba rahīnun"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "wa-amdadnāhum bifākihatin walaḥmin mimmā yashtahūna"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "yatanāzaʿūna fīhā kasan lā laghwun fīhā walā tathīmun"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "wayaṭūfu ʿalayhim ghil'mānun lahum ka-annahum lu'lu-on maknūnun"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "wa-aqbala baʿḍuhum ʿalā baʿḍin yatasāalūna"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "qālū innā kunnā qablu fī ahlinā mush'fiqīna"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "famanna l-lahu ʿalaynā wawaqānā ʿadhāba l-samūmi"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "innā kunnā min qablu nadʿūhu innahu huwa l-baru l-raḥīmu"
        }
    ]
}