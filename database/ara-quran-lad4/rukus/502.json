{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "sa-ala sāilun biʿadhābin wāqiʿin"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "lil'kāfirīna laysa lahu dāfiʿun"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "mina l-lahi dhī l-maʿāriji"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "taʿruju l-malāikatu wal-rūḥu ilayhi fī yawmin kāna miq'dāruhu khamsīna alfa sanatin"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "fa-iṣ'bir ṣabran jamīlan"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "innahum yarawnahu baʿīdan"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "wanarāhu qarīban"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "yawma takūnu l-samāu kal-muh'li"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "watakūnu l-jibālu kal-ʿih'ni"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "walā yasalu ḥamīmun ḥamīman"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "yubaṣṣarūnahum yawaddu l-muj'rimu law yaftadī min ʿadhābi yawmi-idhin bibanīhi"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "waṣāḥibatihi wa-akhīhi"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "wafaṣīlatihi allatī tu'wīhi"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "waman fī l-arḍi jamīʿan thumma yunjīhi"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "kallā innahā laẓā"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "nazzāʿatan lilshawā"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "tadʿū man adbara watawallā"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "wajamaʿa fa-awʿā"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "inna l-insāna khuliqa halūʿan"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "idhā massahu l-sharu jazūʿan"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "wa-idhā massahu l-khayru manūʿan"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "illā l-muṣalīna"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "alladhīna hum ʿalā ṣalātihim dāimūna"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "wa-alladhīna fī amwālihim ḥaqqun maʿlūmun"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "lilssāili wal-maḥrūmi"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "wa-alladhīna yuṣaddiqūna biyawmi l-dīni"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "wa-alladhīna hum min ʿadhābi rabbihim mush'fiqūna"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "inna ʿadhāba rabbihim ghayru mamūnin"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "wa-alladhīna hum lifurūjihim ḥāfiẓūna"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "illā ʿalā azwājihim aw mā malakat aymānuhum fa-innahum ghayru malūmīna"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "famani ib'taghā warāa dhālika fa-ulāika humu l-ʿādūna"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "wa-alladhīna hum li-amānātihim waʿahdihim rāʿūna"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "wa-alladhīna hum bishahādātihim qāimūna"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "wa-alladhīna hum ʿalā ṣalātihim yuḥāfiẓūna"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "ulāika fī jannātin muk'ramūna"
        }
    ]
}