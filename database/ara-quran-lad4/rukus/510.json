{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "yāayyuhā l-mudathiru"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "qum fa-andhir"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "warabbaka fakabbir"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "wathiyābaka faṭahhir"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "wal-ruj'za fa-uh'jur"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "walā tamnun tastakthiru"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "walirabbika fa-iṣ'bir"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "fa-idhā nuqira fī l-nāqūri"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "fadhālika yawma-idhin yawmun ʿasīrun"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "ʿalā l-kāfirīna ghayru yasīrin"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "dharnī waman khalaqtu waḥīdan"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "wajaʿaltu lahu mālan mamdūdan"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "wabanīna shuhūdan"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "wamahhadttu lahu tamhīdan"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "thumma yaṭmaʿu an azīda"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "kallā innahu kāna liāyātinā ʿanīdan"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "sa-ur'hiquhu ṣaʿūdan"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "innahu fakkara waqaddara"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "faqutila kayfa qaddara"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "thumma qutila kayfa qaddara"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "thumma naẓara"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "thumma ʿabasa wabasara"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "thumma adbara wa-is'takbara"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "faqāla in hādhā illā siḥ'run yu'tharu"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "in hādhā illā qawlu l-bashari"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "sa-uṣ'līhi saqara"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "wamā adrāka mā saqaru"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "lā tub'qī walā tadharu"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "lawwāḥatun lil'bashari"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "ʿalayhā tis'ʿata ʿashara"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "wamā jaʿalnā aṣḥāba l-nāri illā malāikatan wamā jaʿalnā ʿiddatahum illā fit'natan lilladhīna kafarū liyastayqina alladhīna ūtū l-kitāba wayazdāda alladhīna āmanū īmānan walā yartāba alladhīna ūtū l-kitāba wal-mu'minūna waliyaqūla alladhīna fī qulūbihim maraḍun wal-kāfirūna mādhā arāda l-lahu bihādhā mathalan kadhālika yuḍillu l-lahu man yashāu wayahdī man yashāu wamā yaʿlamu junūda rabbika illā huwa wamā hiya illā dhik'rā lil'bashari"
        }
    ]
