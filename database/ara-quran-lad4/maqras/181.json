{
    "hizbs": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "fanabadhnāhu bil-ʿarāi wahuwa saqīmun"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "wa-anbatnā ʿalayhi shajaratan min yaqṭīnin"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "wa-arsalnāhu ilā mi-ati alfin aw yazīdūna"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "faāmanū famattaʿnāhum ilā ḥīnin"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "fa-is'taftihim alirabbika l-banātu walahumu l-banūna"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "am khalaqnā l-malāikata ināthan wahum shāhidūna"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "alā innahum min if'kihim layaqūlūna"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "walada l-lahu wa-innahum lakādhibūna"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "aṣṭafā l-banāti ʿalā l-banīna"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "mā lakum kayfa taḥkumūna"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "afalā tadhakkarūna"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "am lakum sul'ṭānun mubīnun"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "fatū bikitābikum in kuntum ṣādiqīna"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "wajaʿalū baynahu wabayna l-jinati nasaban walaqad ʿalimati l-jinatu innahum lamuḥ'ḍarūna"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "sub'ḥāna l-lahi ʿammā yaṣifūna"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "illā ʿibāda l-lahi l-mukh'laṣīna"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "fa-innakum wamā taʿbudūna"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "mā antum ʿalayhi bifātinīna"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "illā man huwa ṣāli l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "wamā minnā illā lahu maqāmun maʿlūmun"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "wa-innā lanaḥnu l-ṣāfūna"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "wa-innā lanaḥnu l-musabiḥūna"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "wa-in kānū layaqūlūna"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "law anna ʿindanā dhik'ran mina l-awalīna"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "lakunnā ʿibāda l-lahi l-mukh'laṣīna"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "fakafarū bihi fasawfa yaʿlamūna"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "walaqad sabaqat kalimatunā liʿibādinā l-mur'salīna"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "innahum lahumu l-manṣūrūna"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "wa-inna jundanā lahumu l-ghālibūna"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "fatawalla ʿanhum ḥattā ḥīnin"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "wa-abṣir'hum fasawfa yub'ṣirūna"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "afabiʿadhābinā yastaʿjilūna"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "fa-idhā nazala bisāḥatihim fasāa ṣabāḥu l-mundharīna"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "watawalla ʿanhum ḥattā ḥīnin"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "wa-abṣir fasawfa yub'ṣirūna"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "sub'ḥāna rabbika rabbi l-ʿizati ʿammā yaṣifūna"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "wasalāmun ʿalā l-mur'salīna"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "wal-ḥamdu lillahi rabbi l-ʿālamīna"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "sad wal-qur'āni dhī l-dhik'ri"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "bali alladhīna kafarū fī ʿizzatin washiqāqin"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "kam ahlaknā min qablihim min qarnin fanādaw walāta ḥīna manāṣin"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "waʿajibū an jāahum mundhirun min'hum waqāla l-kāfirūna hādhā sāḥirun kadhābun"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "ajaʿala l-ālihata ilāhan wāḥidan inna hādhā lashayon ʿujābun"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "wa-inṭalaqa l-mala-u min'hum ani im'shū wa-iṣ'birū ʿalā ālihatikum inna hādhā lashayon yurādu"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "mā samiʿ'nā bihādhā fī l-milati l-ākhirati in hādhā illā ikh'tilāqun"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "a-unzila ʿalayhi l-dhik'ru min bayninā bal hum fī shakkin min dhik'rī bal lammā yadhūqū ʿadhābi"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "am ʿindahum khazāinu raḥmati rabbika l-ʿazīzi l-wahābi"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "am lahum mul'ku l-samāwāti wal-arḍi wamā baynahumā falyartaqū fī l-asbābi"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "jundun mā hunālika mahzūmun mina l-aḥzābi"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "kadhabat qablahum qawmu nūḥin waʿādun wafir'ʿawnu dhū l-awtādi"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "wathamūdu waqawmu lūṭin wa-aṣḥābu al'aykati ulāika l-aḥzābu"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "in kullun illā kadhaba l-rusula faḥaqqa ʿiqābi"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "wamā yanẓuru hāulāi illā ṣayḥatan wāḥidatan mā lahā min fawāqin"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "waqālū rabbanā ʿajjil lanā qiṭṭanā qabla yawmi l-ḥisābi"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "iṣ'bir ʿalā mā yaqūlūna wa-udh'kur ʿabdanā dāwūda dhā l-aydi innahu awwābun"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "innā sakharnā l-jibāla maʿahu yusabbiḥ'na bil-ʿashiyi wal-ish'rāqi"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "wal-ṭayra maḥshūratan kullun lahu awwābun"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "washadadnā mul'kahu waātaynāhu l-ḥik'mata wafaṣla l-khiṭābi"
        }
    ]
}