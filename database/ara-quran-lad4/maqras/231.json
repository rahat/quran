{
    "hizbs": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "lā uq'simu biyawmi l-qiyāmati"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "walā uq'simu bil-nafsi l-lawāmati"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "ayaḥsabu l-insānu allan najmaʿa ʿiẓāmahu"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "balā qādirīna ʿalā an nusawwiya banānahu"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "bal yurīdu l-insānu liyafjura amāmahu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "yasalu ayyāna yawmu l-qiyāmati"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "fa-idhā bariqa l-baṣaru"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "wakhasafa l-qamaru"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "wajumiʿa l-shamsu wal-qamaru"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "yaqūlu l-insānu yawma-idhin ayna l-mafaru"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "kallā lā wazara"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "ilā rabbika yawma-idhin l-mus'taqaru"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "yunabba-u l-insānu yawma-idhin bimā qaddama wa-akhara"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "bali l-insānu ʿalā nafsihi baṣīratun"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "walaw alqā maʿādhīrahu"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "lā tuḥarrik bihi lisānaka litaʿjala bihi"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "inna ʿalaynā jamʿahu waqur'ānahu"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "fa-idhā qaranāhu fa-ittabiʿ qur'ānahu"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "thumma inna ʿalaynā bayānahu"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "kallā bal tuḥibbūna l-ʿājilata"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "watadharūna l-ākhirata"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "wujūhun yawma-idhin nāḍiratun"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "ilā rabbihā nāẓiratun"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "wawujūhun yawma-idhin bāsiratun"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "taẓunnu an yuf'ʿala bihā fāqiratun"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "kallā idhā balaghati l-tarāqiya"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "waqīla man rāqin"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "waẓanna annahu l-firāqu"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "wal-tafati l-sāqu bil-sāqi"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "ilā rabbika yawma-idhin l-masāqu"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "falā ṣaddaqa walā ṣallā"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "walākin kadhaba watawallā"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "thumma dhahaba ilā ahlihi yatamaṭṭā"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "awlā laka fa-awlā"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "thumma awlā laka fa-awlā"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "ayaḥsabu l-insānu an yut'raka sudan"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "alam yaku nuṭ'fatan min maniyyin yum'nā"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "thumma kāna ʿalaqatan fakhalaqa fasawwā"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "fajaʿala min'hu l-zawjayni l-dhakara wal-unthā"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "alaysa dhālika biqādirin ʿalā an yuḥ'yiya l-mawtā"
        },
        {
            "chapter": 76,
            "verse": 1,
            "text": "hal atā ʿalā l-insāni ḥīnun mina l-dahri lam yakun shayan madhkūran"
        },
        {
            "chapter": 76,
            "verse": 2,
            "text": "innā khalaqnā l-insāna min nuṭ'fatin amshājin nabtalīhi fajaʿalnāhu samīʿan baṣīran"
        },
        {
            "chapter": 76,
            "verse": 3,
            "text": "innā hadaynāhu l-sabīla immā shākiran wa-immā kafūran"
        },
        {
            "chapter": 76,
            "verse": 4,
            "text": "innā aʿtadnā lil'kāfirīna salāsilā wa-aghlālan wasaʿīran"
        },
        {
            "chapter": 76,
            "verse": 5,
            "text": "inna l-abrāra yashrabūna min kasin kāna mizājuhā kāfūran"
        },
        {
            "chapter": 76,
            "verse": 6,
            "text": "ʿaynan yashrabu bihā ʿibādu l-lahi yufajjirūnahā tafjīran"
        },
        {
            "chapter": 76,
            "verse": 7,
            "text": "yūfūna bil-nadhri wayakhāfūna yawman kāna sharruhu mus'taṭīran"
        },
        {
            "chapter": 76,
            "verse": 8,
            "text": "wayuṭ'ʿimūna l-ṭaʿāma ʿalā ḥubbihi mis'kīnan wayatīman wa-asīran"
        },
        {
            "chapter": 76,
            "verse": 9,
            "text": "innamā nuṭ'ʿimukum liwajhi l-lahi lā nurīdu minkum jazāan walā shukūran"
        },
        {
            "chapter": 76,
            "verse": 10,
            "text": "innā nakhāfu min rabbinā yawman ʿabūsan qamṭarīran"
        },
        {
            "chapter": 76,
            "verse": 11,
            "text": "fawaqāhumu l-lahu sharra dhālika l-yawmi walaqqāhum naḍratan wasurūran"
        },
        {
            "chapter": 76,
            "verse": 12,
            "text": "wajazāhum bimā ṣabarū jannatan waḥarīran"
        },
        {
            "chapter": 76,
            "verse": 13,
            "text": "muttakiīna fīhā ʿalā l-arāiki lā yarawna fīhā shamsan walā zamharīran"
        },
        {
            "chapter": 76,
            "verse": 14,
            "text": "wadāniyatan ʿalayhim ẓilāluhā wadhullilat quṭūfuhā tadhlīlan"
        },
        {
            "chapter": 76,
            "verse": 15,
            "text": "wayuṭāfu ʿalayhim biāniyatin min fiḍḍatin wa-akwābin kānat qawārīrā"
        },
        {
            "chapter": 76,
            "verse": 16,
            "text": "qawārīrā min fiḍḍatin qaddarūhā taqdīran"
        },
        {
            "chapter": 76,
            "verse": 17,
            "text": "wayus'qawna fīhā kasan kāna mizājuhā zanjabīlan"
        },
        {
            "chapter": 76,
            "verse": 18,
            "text": "ʿaynan fīhā tusammā salsabīlan"
        }
    ]
}