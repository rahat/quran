{
    "hizbs": [
        {
            "chapter": 15,
            "verse": 50,
            "text": "wa-anna ʿadhābī huwa l-ʿadhābu l-alīmu"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "wanabbi'hum ʿan ḍayfi ib'rāhīma"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "idh dakhalū ʿalayhi faqālū salāman qāla innā minkum wajilūna"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "qālū lā tawjal innā nubashiruka bighulāmin ʿalīmin"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "qāla abashartumūnī ʿalā an massaniya l-kibaru fabima tubashirūna"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "qālū basharnāka bil-ḥaqi falā takun mina l-qāniṭīna"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "qāla waman yaqnaṭu min raḥmati rabbihi illā l-ḍālūna"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "qāla famā khaṭbukum ayyuhā l-mur'salūna"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "qālū innā ur'sil'nā ilā qawmin muj'rimīna"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "illā āla lūṭin innā lamunajjūhum ajmaʿīna"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "illā im'ra-atahu qaddarnā innahā lamina l-ghābirīna"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "falammā jāa āla lūṭin l-mur'salūna"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "qāla innakum qawmun munkarūna"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "qālū bal ji'nāka bimā kānū fīhi yamtarūna"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "wa-ataynāka bil-ḥaqi wa-innā laṣādiqūna"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "fa-asri bi-ahlika biqiṭ'ʿin mina al-layli wa-ittabiʿ adbārahum walā yaltafit minkum aḥadun wa-im'ḍū ḥaythu tu'marūna"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "waqaḍaynā ilayhi dhālika l-amra anna dābira hāulāi maqṭūʿun muṣ'biḥīna"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "wajāa ahlu l-madīnati yastabshirūna"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "qāla inna hāulāi ḍayfī falā tafḍaḥūni"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "wa-ittaqū l-laha walā tukh'zūni"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "qālū awalam nanhaka ʿani l-ʿālamīna"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "qāla hāulāi banātī in kuntum fāʿilīna"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "laʿamruka innahum lafī sakratihim yaʿmahūna"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "fa-akhadhathumu l-ṣayḥatu mush'riqīna"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "fajaʿalnā ʿāliyahā sāfilahā wa-amṭarnā ʿalayhim ḥijāratan min sijjīlin"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "inna fī dhālika laāyātin lil'mutawassimīna"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "wa-innahā labisabīlin muqīmin"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "inna fī dhālika laāyatan lil'mu'minīna"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "wa-in kāna aṣḥābu l-aykati laẓālimīna"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "fa-intaqamnā min'hum wa-innahumā labi-imāmin mubīnin"
        },
        {
            "chapter": 15,
            "verse": 80,
            "text": "walaqad kadhaba aṣḥābu l-ḥij'ri l-mur'salīna"
        },
        {
            "chapter": 15,
            "verse": 81,
            "text": "waātaynāhum āyātinā fakānū ʿanhā muʿ'riḍīna"
        },
        {
            "chapter": 15,
            "verse": 82,
            "text": "wakānū yanḥitūna mina l-jibāli buyūtan āminīna"
        },
        {
            "chapter": 15,
            "verse": 83,
            "text": "fa-akhadhathumu l-ṣayḥatu muṣ'biḥīna"
        },
        {
            "chapter": 15,
            "verse": 84,
            "text": "famā aghnā ʿanhum mā kānū yaksibūna"
        },
        {
            "chapter": 15,
            "verse": 85,
            "text": "wamā khalaqnā l-samāwāti wal-arḍa wamā baynahumā illā bil-ḥaqi wa-inna l-sāʿata laātiyatun fa-iṣ'faḥi l-ṣafḥa l-jamīla"
        },
        {
            "chapter": 15,
            "verse": 86,
            "text": "inna rabbaka huwa l-khalāqu l-ʿalīmu"
        },
        {
            "chapter": 15,
            "verse": 87,
            "text": "walaqad ātaynāka sabʿan mina l-mathānī wal-qur'āna l-ʿaẓīma"
        },
        {
            "chapter": 15,
            "verse": 88,
            "text": "lā tamuddanna ʿaynayka ilā mā mattaʿnā bihi azwājan min'hum walā taḥzan ʿalayhim wa-ikh'fiḍ janāḥaka lil'mu'minīna"
        },
        {
            "chapter": 15,
            "verse": 89,
            "text": "waqul innī anā l-nadhīru l-mubīnu"
        },
        {
            "chapter": 15,
            "verse": 90,
            "text": "kamā anzalnā ʿalā l-muq'tasimīna"
        },
        {
            "chapter": 15,
            "verse": 91,
            "text": "alladhīna jaʿalū l-qur'āna ʿiḍīna"
        },
        {
            "chapter": 15,
            "verse": 92,
            "text": "fawarabbika lanasalannahum ajmaʿīna"
        },
        {
            "chapter": 15,
            "verse": 93,
            "text": "ʿammā kānū yaʿmalūna"
        },
        {
            "chapter": 15,
            "verse": 94,
            "text": "fa-iṣ'daʿ bimā tu'maru wa-aʿriḍ ʿani l-mush'rikīna"
        },
        {
            "chapter": 15,
            "verse": 95,
            "text": "innā kafaynāka l-mus'tahziīna"
        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "alladhīna yajʿalūna maʿa l-lahi ilāhan ākhara fasawfa yaʿlamūna"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "walaqad naʿlamu annaka yaḍīqu ṣadruka bimā yaqūlūna"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "fasabbiḥ biḥamdi rabbika wakun mina l-sājidīna"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "wa-uʿ'bud rabbaka ḥattā yatiyaka l-yaqīnu"
        }
    ]
}