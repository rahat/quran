{
    "pages": [
        {
            "chapter": 37,
            "verse": 127,
            "text": "fakadhabūhu fa-innahum lamuḥ'ḍarūna"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "illā ʿibāda l-lahi l-mukh'laṣīna"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "wataraknā ʿalayhi fī l-ākhirīna"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "salāmun ʿalā il yāsīna"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "innā kadhālika najzī l-muḥ'sinīna"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "innahu min ʿibādinā l-mu'minīna"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "wa-inna lūṭan lamina l-mur'salīna"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "idh najjaynāhu wa-ahlahu ajmaʿīna"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "illā ʿajūzan fī l-ghābirīna"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "thumma dammarnā l-ākharīna"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "wa-innakum latamurrūna ʿalayhim muṣ'biḥīna"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "wabi-al-layli afalā taʿqilūna"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "wa-inna yūnusa lamina l-mur'salīna"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "idh abaqa ilā l-ful'ki l-mashḥūni"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "fasāhama fakāna mina l-mud'ḥaḍīna"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "fal-taqamahu l-ḥūtu wahuwa mulīmun"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "falawlā annahu kāna mina l-musabiḥīna"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "lalabitha fī baṭnihi ilā yawmi yub'ʿathūna"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "fanabadhnāhu bil-ʿarāi wahuwa saqīmun"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "wa-anbatnā ʿalayhi shajaratan min yaqṭīnin"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "wa-arsalnāhu ilā mi-ati alfin aw yazīdūna"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "faāmanū famattaʿnāhum ilā ḥīnin"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "fa-is'taftihim alirabbika l-banātu walahumu l-banūna"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "am khalaqnā l-malāikata ināthan wahum shāhidūna"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "alā innahum min if'kihim layaqūlūna"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "walada l-lahu wa-innahum lakādhibūna"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "aṣṭafā l-banāti ʿalā l-banīna"
        }
    ]
