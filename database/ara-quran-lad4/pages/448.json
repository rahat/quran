{
    "pages": [
        {
            "chapter": 37,
            "verse": 52,
            "text": "yaqūlu a-innaka lamina l-muṣadiqīna"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "a-idhā mit'nā wakunnā turāban waʿiẓāman a-innā lamadīnūna"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "qāla hal antum muṭṭaliʿūna"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "fa-iṭṭalaʿa faraāhu fī sawāi l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "qāla tal-lahi in kidtta latur'dīni"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "walawlā niʿ'matu rabbī lakuntu mina l-muḥ'ḍarīna"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "afamā naḥnu bimayyitīna"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "illā mawtatanā l-ūlā wamā naḥnu bimuʿadhabīna"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "inna hādhā lahuwa l-fawzu l-ʿaẓīmu"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "limith'li hādhā falyaʿmali l-ʿāmilūna"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "adhālika khayrun nuzulan am shajaratu l-zaqūmi"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "innā jaʿalnāhā fit'natan lilẓẓālimīna"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "innahā shajaratun takhruju fī aṣli l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "ṭalʿuhā ka-annahu ruūsu l-shayāṭīni"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "fa-innahum laākilūna min'hā famāliūna min'hā l-buṭūna"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "thumma inna lahum ʿalayhā lashawban min ḥamīmin"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "thumma inna marjiʿahum la-ilā l-jaḥīmi"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "innahum alfaw ābāahum ḍāllīna"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "fahum ʿalā āthārihim yuh'raʿūna"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "walaqad ḍalla qablahum aktharu l-awalīna"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "walaqad arsalnā fīhim mundhirīna"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "fa-unẓur kayfa kāna ʿāqibatu l-mundharīna"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "illā ʿibāda l-lahi l-mukh'laṣīna"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "walaqad nādānā nūḥun falaniʿ'ma l-mujībūna"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "wanajjaynāhu wa-ahlahu mina l-karbi l-ʿaẓīmi"
        }
    ]
