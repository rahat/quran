{
    "pages": [
        {
            "chapter": 44,
            "verse": 1,
            "text": "hha-meem"
        },
        {
            "chapter": 44,
            "verse": 2,
            "text": "wal-kitābi l-mubīni"
        },
        {
            "chapter": 44,
            "verse": 3,
            "text": "innā anzalnāhu fī laylatin mubārakatin innā kunnā mundhirīna"
        },
        {
            "chapter": 44,
            "verse": 4,
            "text": "fīhā yuf'raqu kullu amrin ḥakīmin"
        },
        {
            "chapter": 44,
            "verse": 5,
            "text": "amran min ʿindinā innā kunnā mur'silīna"
        },
        {
            "chapter": 44,
            "verse": 6,
            "text": "raḥmatan min rabbika innahu huwa l-samīʿu l-ʿalīmu"
        },
        {
            "chapter": 44,
            "verse": 7,
            "text": "rabbi l-samāwāti wal-arḍi wamā baynahumā in kuntum mūqinīna"
        },
        {
            "chapter": 44,
            "verse": 8,
            "text": "lā ilāha illā huwa yuḥ'yī wayumītu rabbukum warabbu ābāikumu l-awalīna"
        },
        {
            "chapter": 44,
            "verse": 9,
            "text": "bal hum fī shakkin yalʿabūna"
        },
        {
            "chapter": 44,
            "verse": 10,
            "text": "fa-ir'taqib yawma tatī l-samāu bidukhānin mubīnin"
        },
        {
            "chapter": 44,
            "verse": 11,
            "text": "yaghshā l-nāsa hādhā ʿadhābun alīmun"
        },
        {
            "chapter": 44,
            "verse": 12,
            "text": "rabbanā ik'shif ʿannā l-ʿadhāba innā mu'minūna"
        },
        {
            "chapter": 44,
            "verse": 13,
            "text": "annā lahumu l-dhik'rā waqad jāahum rasūlun mubīnun"
        },
        {
            "chapter": 44,
            "verse": 14,
            "text": "thumma tawallaw ʿanhu waqālū muʿallamun majnūnun"
        },
        {
            "chapter": 44,
            "verse": 15,
            "text": "innā kāshifū l-ʿadhābi qalīlan innakum ʿāidūna"
        },
        {
            "chapter": 44,
            "verse": 16,
            "text": "yawma nabṭishu l-baṭshata l-kub'rā innā muntaqimūna"
        },
        {
            "chapter": 44,
            "verse": 17,
            "text": "walaqad fatannā qablahum qawma fir'ʿawna wajāahum rasūlun karīmun"
        },
        {
            "chapter": 44,
            "verse": 18,
            "text": "an addū ilayya ʿibāda l-lahi innī lakum rasūlun amīnun"
        }
    ]
