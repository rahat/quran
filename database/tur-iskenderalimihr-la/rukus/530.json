{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Gasiyenin (heryeri kusatıp kaplayacak olan korkunc felaketin) haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Izin gunu zillet icinde olan yuzler vardır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Yorucu isler yapan"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "(Onlar) kızgın atese atılırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar su pınarından icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onların yiyecegi dari´den (acı, pis kokulu dikenli agactan) baska bir sey degildir"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Beslemez ve aclıga da bir fayda vermez"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Izin gunu naim (guzel ve parlak) yuzler vardır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "(Dunyadaki) sa´yından (calısmasından) razıdır"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Ali cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz isitmezsin"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada devamlı akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Ve (onlerine) konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Ve dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve yayılmıs suslu kıymetli halılar (vardır)"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Onlar hala deveye bakmıyorlar mı ki, nasıl yaratılmıs"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve semaya nasıl yukseltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve daglara, nasıl dik olarak yerlestirilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yeryuzune, nasıl duzlestirilmis (bakmıyorlar mı)"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık zikret (hatırlat), sen sadece muzekkirsin (hatırlatıcısın)"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onların uzerinde bir zorlayıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim (arkasını) doner ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "O taktirde Allah onu en buyuk azap ile azaplandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Muhakkak ki onların donusu Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesapları muhakkak ki Bize aittir"
        }
    ]
}