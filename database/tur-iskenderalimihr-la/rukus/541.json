{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Arz, o siddetli sarsıntısı ile sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve arz, agırlıklarını dısarı cıkardıgı (zaman)"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: “Ona ne oluyor?” dedigi (zaman)"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun (izin gunu), (arz) haberlerini anlatacak"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Rabbinin ona vahyetmesi ile"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "Izin gunu insanlar, amellerinin kendilerine gosterilmesi icin dagınık olarak ortaya cıkacak"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre kadar hayır islerse onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim zerre kadar serr islerse onu gorur"
        }
    ]
}