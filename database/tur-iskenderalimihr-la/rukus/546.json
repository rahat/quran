{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan cekistirmeyi ve kas-gozle alay etmeyi alıskanlık haline getirenlerin hepsinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki, malı toplardı ve onu, tekrar tekrar sayardı"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının onu ebedi kılacagını sanıyor"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, o mutlaka hutameye (tutusturulmus atese) atılacak"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Ve hutamenin ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Ki o (hutame) yureklerin ustune cıkar (yukselir)"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Muhakkak ki o, onların (kafirlerin) uzerine kapatılmıstır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzatılmıs yuksek sutunlarda olacaklar (baglanacaklar)"
        }
    ]
}