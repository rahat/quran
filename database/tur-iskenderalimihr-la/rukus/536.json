            "chapter": 94,
            "verse": 1,
            "text": "Gogsunu senin icin serhetmedik mi (yarıp genisletmedik mi)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve senden yukunu kaldırdık (kaldırmadık mı)"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o (yuk) senin sırtını bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve senin icin, zikrini yukselttik"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "O halde, muhakkak ki zorluk ve kolaylık beraberdir"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Muhakkak ki zorluk ve kolaylık beraberdir"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Oyleyse bos kaldıgın zaman hemen intisap et"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve oyleyse Rabbine ragbet et (O´nu ov, hamdet, zikret, tesbih et)"
