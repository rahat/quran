{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "O vakıa (muthis olay) vuku buldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun vuku bulmasını yalanlayan (kimse) yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alcaltıcıdır, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "O zaman arz (yeryuzu) siddetli bir sarsıntıyla sarsılmıstır"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve daglar ufalanarak parcalanmıstır"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Boylece dagılıp toz zerrecikleri haline gelmistir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve (o zaman) siz uc sınıfa ayrılmıs olursunuz"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Iste ashabı meymene [meymene sahipleri, amel defteri (hayat filmleri) sagından verilen cennetlikler], (ama) ne ashabı meymene"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ve ashabı meseme [meseme sahipleri, amel defteri (hayat filmleri) solundan verilen cehennemlikler], (ama) ne ashabı meseme"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve sabikunlar (hayırlarda yarısıp ileri gecenler), sabikunlar"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlar (sabikunlar). Mukarrip (Allah´a yaklastırılmıs) olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "(Onlar), naim cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onlar), evvelkilerden bir ummettir"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Ve (onların) birazı sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın ile orulmus, mucevherlerle (inci ve yakutla) suslenmis tahtlar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların uzerinde karsılıklı olarak yaslananlar onlardır (mukarrebun olanlardır)"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında halidun olan (olumsuz) gencler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Akan pınarlardan doldurulmus kaseler, ibrikler ve billur kadehler ile"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan (o saraptan) basları agrımaz ve sarhos olmazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve arzu ettikleri meyvelerden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Ve canlarının cektigi kus etlerinden (sunulur)"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve harika guzel gozlu huriler (vardır)"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki saklanmıs inci tanesi gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmıs olduklarının mukafatı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir soz isitmezler ve gunaha girmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece selam, selam sozu soylenir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ashabı yemin [yemin sahipleri, amel defterleri (hayat filmleri) sagından verilenler], (ama) ne ashabı yemin"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(Ashabı yemin), dikensiz sedir agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Ve meyveleri kat kat dizili muz agacları (arasında)"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Ve uzayan golgeler (icinde)"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Ve caglayan sular (arasında)"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve pekcok meyveler (arasında)"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Eksilmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yuksetilmis doseklerdedirler (tahtlardadırlar)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Muhakkak ki Biz, onları yeni bir insa (yaratılıs) ile insa ettik (yarattık)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Boylece Biz, onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine duskun, aynı yasta olarak"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ashabı yemin [yemin sahipleri, amel defterleri (hayat filmleri) onunden ve sagından verilenler] icin"
        }
    ]
}