{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Ardarda (marufla, irfanla) gonderilenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Ve de siddetle estikce esenlere (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Dagıtıp yayanlara andolsun"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Ve de ayırdıkca ayıranlara (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ve de zikri ilka edenlere (andolsun)"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(Bu yeminler), ozur olarak (mazeret olmaması) veya nezir olarak (uyarması) icindir"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Muhakkak ki vaadolundugunuz sey, mutlaka vuku bulacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Oyle ki, o zaman yıldızların ısıgı giderilmistir"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Ve o zaman gok yarılmıstır"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Ve o zaman daglar dagılmıstır"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Ve o zaman resullere vakit bildirilmistir"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "(Bunlar) hangi gun icin tecil edildi (ertelendi)"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Fasıl (ayırma) gunu icin (tecil edildi)"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "O fasıl gununun ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Izin gunu, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Evvelkileri Biz helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra digerlerini (arkadan gelenleri) deonlara tabi kılarız"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Mucrimlere iste boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi Biz, degersiz bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonra onu saglam bir yerde kararlı kıldık (yerlestirdik)"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Bilinen bir sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Iste Biz, boyle takdir ettik. Bunu takdir edenler ne guzel (kudret sahibi)"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz arzı toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Canlılara ve olulere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve orada yuksek sabit daglar kıldık. Ve sizi tatlı su ile suladık (icecek su verdik)"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "O yalanlamıs oldugunuz seye gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Uc catallı olan golgeye gidiniz"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Golgelendirmez ve yakıcı aleve bir faydası olmaz"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Muhakkak ki o, saray gibi (buyuk) kıvılcımlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o (kıvılcımlar), sarı erkek develer gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, (yalanlayanların) konusamayacakları bir gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ve onlara izin verilmez ki, ozur beyan etsinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu ayrılma gunudur. Sizi ve evvelkileri biraraya topladık"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Haydi eger sizin bir tuzagınız varsa hemen Bana karsı tuzak kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Muhakkak ki takva sahipleri golgelerde ve pınarbaslarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının cektigi (istah duydukları) meyveler vardır"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptıklarınız sebebiyle afiyetle yeyin ve icin"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Muhakkak ki Biz, muhsinleri iste boyle mukafatlandırırız"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yeyin ve biraz da metalanın (faydalanın). Cunku siz mucrimlersiniz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Ve onlara: “Ruku edin!” denildigi zaman ruku etmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Izin gunu yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Bundan baska artık hangi soze inanacaklar"
        }
    ]
}