{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Oysa yetimi itip kakan iste odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ve miskini (yoksulu, calısmaya gucu olmayanı) doyurmaya tesvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Iste o namaz kılanlara yazıklar olsun"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar ki, namazlarından gafil olanlardır"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar riya yapanlardır (gosteris icin yapanlardır)"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve mauna (zekata ve yardımlasmaya) mani olurlar"
        }
    ]
}