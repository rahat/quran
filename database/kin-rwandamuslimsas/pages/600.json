{
    "pages": [
        {
            "chapter": 100,
            "verse": 10,
            "text": "N’ibiri mu bituza (by’abantu) bigashyirwa ahagaragara"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Mu by’ukuri uwo munsi Nyagasani wabo azaba azi neza ibyabo"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Ikizahonda (umunsi w’imperuka)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Ikizahonda ni iki"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Ni iki kizakumenyesha ikizahonda"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Ni umunsi (w’imperuka), ubwo abantu bazamera nk’ibinyugunyugu binyanyagiye"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "N’imisozi ikamera nk’amoya (akemurwa ku matungo) atumuka"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Bityo, uwo umunzani we (w’ibikorwa byiza) uzaremera (bikaruta ibibi)"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Azaba mu buzima bw’umunezero (Ijuru)"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Ariko uwo umunzani we (w’ibikorwa byiza) uzaba utaremereye (bikarutwa n’ibibi)"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Ubuturo bwe buzaba ari mu muriro witwa Hawiya"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ni iki cyawukumenyesha (umuriro wa Hawiya)"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Ni umuriro ugurumana bikabije"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Mwarangajwe no gushaka kwigwizaho ubutunzi"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Kugeza ubwo mugeze mu mva"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Oya ntibikwiye! Bidatinze muzamenya (ko ubuzima bw’imperuka ari bwo bwiza kuri mwe)"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Oya na none! Bidatinze muzamenya"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Oya! Iyo muza kugira ubumenyi budashidikanywaho (bw’ibijyanye n’iherezo ryo kurangazwa no kwigwizaho imitungo, ntimwari guhugira mu by’isi)"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Mu by’ukuri muzabona umuriro wa Jahiim"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Rwose muzawibonera imbonankubone"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Kandi rwose, kuri uwo munsi muzabazwa ku ngabire (mwahawe muri ku isi)"
        }
    ]
}