{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Ni iki (abahakanyi b’abakurayishi) babazanyaho"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Ku nkuru ihambaye (Qur’an n’umunsi w’imperuka)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "(Iyo nkuru) batavugaho rumwe (hagati y’abayemera n’abayihakana)"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Oya! Rwose bidatinze bazamenya"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Oya nanone! Bidatinze bazamenya"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Ese isi ntitwayigize nk’isaso"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "N’imisozi tukayigira nk’imambo"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Tukanabarema muri ibitsina byombi (gabo na gore)"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Kandi ibitotsi byanyu twabigize uburyo bw’ikiruhuko"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "N’ijoro turigira nk’umwambaro (binyuze mu mwijima waryo)"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "N’amanywa tuyagira ayo gushakiramo imibereho"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Tunubaka hejuru yanyu (ibirere) birindwi bikomeye"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Ndetse (n’izuba) turigira itara rimurika cyane"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Tunamanura mu bicu amazi menshi yisuka"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Kugira ngo tuyamereshe impeke n’ibimera"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "N’imirima y’ibiti by’inzitane"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Mu by’ukuri umunsi w’urubanza ufite igihe ntarengwa"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Umunsi impanda izavuzwa, maze mukaza muri amatsinda"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "N’ikirere kizakingurwa maze gihinduke nk’amarembo"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "N’imisozi izakurwa mu myanya yayo, imere nk’ibirorirori"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Mu by’ukuri umuriro wa Jahanamu urarekereje"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Ni wo garukiro ry’ibyigomeke"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Bizawubamo imyaka n’imyaniko"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "(Ibyo byigomeke) ntibizawumvamo amafu cyangwa ikinyobwa"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Uretse amazi yatuye n’amashyira"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(Ibyo bikazaba) ari igihembo gikwiye (ibikorwa bibi bakoraga)"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Kuko mu by’ukuri batajyaga bizera ibarura"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ndetse banahinyuraga amagambo yacu cyane"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Kandi byose twarabibaruye mu nyandiko"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Ngaho nimusogongere (ingaruka z’ibikorwa byanyu bibi), kandi nta kindi tubongerera usibye ibihano"
        }
    ]
}