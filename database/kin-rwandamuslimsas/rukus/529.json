{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Singiza izina rya Nyagasani wawe, Uwikirenga"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "We waremye akanatunganya (buri kintu)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Akanakigenera (gahunda yacyo yose), hanyuma akayikiyoboramo"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ni na We umeza ubwatsi mu nzuri"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Hanyuma akabwumisha bugahindura ibara"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Rwose (yewe Muhamadi) tuzakwigisha (gusoma Qur’an), bityo ntuzayibagirwa"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Keretse ibyo Allah azashaka (ko wibagirwa). Mu by’ukuri azi ibigaragara n’ibitagaragara"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Tuzanakorohereza inzira yo gukora ibyiza"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Bityo, ibutsa (abantu) igihe urwibutso rwabagirira akamaro"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Mu by’ukuri hazibuka wa wundi utinya (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ariko inkozi y’ibibi izarugendera kure (urwibutso)"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "(Uwo) ni we uzajya mu muriro uhambaye (akawuhiramo)"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Aho atazapfa (ngo aruhuke) cyangwa ngo agiriremo ubuzima (bwiza)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Mu by’ukuri wa wundi wiyejeje (akirinda ibyaha) yamaze kubona intsinzi"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Akanasingiza izina rya Nyagasani we ndetse akanakora iswala"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ariko mwe mwikundira ubuzima bwo kuri iyi si"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Nyamara ubwo ku mperuka ari bwo bwiza kurushaho ndetse buzanahoraho"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Mu by’ukuri ibi (mubwirwa) biri mu byanditswe byo hambere"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Inyandiko (zahishuriwe) Ibrahim na Musa"
        }
    ]
}