{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Gunes´e ve onun parıltısına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Gunes´in ardından gelen Ay´a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Gunes´i acıp ortaya cıkaran gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu bicimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kotuluk ve takva kabiliyetini verene yemin olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Elbette nefsini temizleyip parlatan kurtulmustur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gomen de ziyan etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlıgıyla Hakk´ı yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri atılınca"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın Rasulu (Salih peygamber) onlara: «Allah´ın devesini ve onun su nobetini gozetin.» demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onlar peygamberi yalanlayıp deveyi kestiler. Rableri de gunahlarını baslarına geciriverdi de orayı dumduz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Oyle ya, Allah bu isin sonundan korkacak degil ya"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Orttugu zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Acıldıgı zaman gunduze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkegi ve disiyi yaratana and olsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Gercekten sizin isiniz baska baskadır"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Bundan boyle her kim malını hayır icin verir ve korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve en guzel olanı dogrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Biz onu en kolay yola muvaffak kılacagız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Kim de cimrilik eder ve kendini hicbir seye ihtiyacı kalmamıs gorur"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en guzeli de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da en zor yola hazırlarız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Cukura yuvarlandıgı zaman malı onu kurtaramayacak"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Dogru yolu gostermek muhakkak bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Kuskusuz ahiret de dunya da bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi kopurdukce kopuren bir atese karsı uyardım"
        }
    ]
}