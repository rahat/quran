{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Olacak vak´a oldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun olusunu yalanlayacak kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alcaltıcıdır, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar serpildikce serpildigi"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagılıp toz duman haline geldigi"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagın adamları (var ya) ne mutludurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solun adamları ise ne ugursuzdurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Onde olanlar (var ya), onlar oncudurler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste o yaklastırılanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Cogu onceki ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Onlar) cevherlerle islenmis tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı olarak onların uzerinde yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Cevrelerinde, olumsuzluge ulasmıs gencler dolasırlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagından doldurulmus, testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan ne basları agrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyvalar"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir soz ve gunaha sokan bir laf isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Duydukları soz, yalnız «selam», «selam» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagın adamları, nedir o sagın adamları"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dalbastı kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva dizili muzlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fıskıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Pek cok meyva arasında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yukseltilmis dosekler ustundedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden insa ettik (yarattık)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Hep yasıt sevgililer"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sagın adamları icindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir cogu oncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir cogu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solun adamları, nedir o solcular"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Iclerine isleyen bir ates ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kapkara dumandan bir golge altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ki ne serindir, ne de faydalı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar bundan once varlık icinde sefahete dalmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahı islemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardı ki: «Biz olup, toprak ve kemik yıgını olduktan sonra, biz mi bir daha diriltilecegiz?»"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "«Onceki atalarımızda mı?»"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Oncekiler ve sonrakiler»"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "«Belli bir gunun belli vaktinde mutlaka toplanacaklardır.»"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapık yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir agactan, zakkum agacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı hep onunla dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune de kaynar su iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susuzluk illetine tutulmus develerin icisi gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Iste ceza gununde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Biz sizi yarattık; tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attıgınız meniyi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda olumu takdir eden biziz ve bizim onumuze gecilmez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Boylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediginiz bir yaratılısta tekrar var edelim diye (boyle yapıyoruz)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratılısı bildiniz. Dusunup ibret almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginizi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik, onu kuru bir cop yapardık. Hayret eder dururdunuz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "«Dogrusu borc altına girdik.»"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "«Dogrusu, biz yoksul bırakıldık» (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ictiginiz suya baktınız mı"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. O halde sukretseniz ya"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Yaktıgınız atesi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yarattınız, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve colden gelip gecenlere bir fayda yaptık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse buyuk Rabbinin adını yucelt"
        }
    ]
}