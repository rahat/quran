{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Yaratılısca siz mi daha cetinsiniz, yoksa gok mu? Onu Allah bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Tavanını yukseltti, onu bir duzene koydu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, kuslugunu cıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra da yeryuzunu dosedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagını cıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Daglarını oturttu"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın gecimi icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Fakat o her seyi bastıran buyuk felaket geldigi vakit"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O, insanın neyin pesinde kostugunu anladıgı gun"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Goren kimseler icin cehennem hortlatıldıgı vakit"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık her kim azgınlık etmis"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dunya hayatını tercih etmisse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Kuskusuz onun varacagı yer cehennemdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kim de Rabbinin divanında durmaktan korkmus, nefsini bos heveslerden menetmis ise"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Kuskusuz onun varacagı yer cennettir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana o kıyameti soruyorlar, ne zaman kopacak diye"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen nerde, onu anlatmak nerde"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun son ilmi Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkacak olanları uyarıcısın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onlar o kıyameti gorecekleri gun sanki dunyada bir aksam veya kuslugundan baska durmamısa donecekler"
        }
    ]
}