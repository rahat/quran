{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun siddetle cekip cıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Usulcacık cekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarısıp gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken bir is cevirenlere kasem olsun (ki kıyamet var)"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun deprem sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Onu ikinci bir sarsıntı izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Yurekler vardır, o gun kaygıdan hoplar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozler kalkmaz saygıdan"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz tekrar eski halimize mi dondurulecekmisiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "«Biz, curumus kemikler olduktan sonra ha?»"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "«Oyleyse bu cok zararlı bir donustur.» dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Fakat o bir tek haykırıstır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Bir de bakarsın hepsi meydandadır"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona kutsal vaadi Tuva´da seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "«Haydi, demisti, git Firavun´a, cunku o cok azdı.»"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: Ister misin arınasın"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbinin yoluna ileteyim de ondan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Musa Firavun´a o buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat Firavun yalanladı, karsı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra kosarak donup gitti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken adamlarını topladı da bagırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "«Ben sizin en yuce Rabbinizim» dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu tuttu, dunya ve ahiret azabıyla yakalayıverdi"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Kuskusuz bunda, saygı duyacaklar icin bir ibret vardır"
        }
    ]
}