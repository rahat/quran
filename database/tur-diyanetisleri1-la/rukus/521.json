{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Yaratilisca siz mi daha cetinsiniz, yoksa gok mu? Onu Allah bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Tavanini yukseltti, onu bir duzene koydu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karartti, kuslugunu cikardi"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra da yeryuzunu dosedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagini cikardi"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Daglarini oturttu"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarinizin gecimi icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Fakat o her seyi bastiran buyuk felaket geldigi vakit"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O, insanin neyin pesinde kostugunu anladigi gun"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Goren kimseler icin cehennem hortlatildigi vakit"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artik her kim azginlik etmis"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dunya hayatini tercih etmisse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Kuskusuz onun varacagi yer cehennemdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kim de Rabbinin divaninda durmaktan korkmus, nefsini bos heveslerden menetmis ise"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Kuskusuz onun varacagi yer cennettir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana o kiyameti soruyorlar, ne zaman kopacak diye"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen nerde, onu anlatmak nerde"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun son ilmi Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkacak olanlari uyaricisin"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onlar o kiyameti gorecekleri gun sanki dunyada bir aksam veya kuslugundan baska durmamisa donecekler"
        }
    ]
}