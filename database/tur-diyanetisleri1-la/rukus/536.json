{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz senin icin (mutlulugun) gogsunu acmadik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Senden yukunu indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "O senin sirtini ezen yuku"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin sanini yuceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, zorlukla beraber bir kolaylik vardir"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet, zorlukla beraber bir kolaylik vardir"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde bos kaldin mi, yine kalk (baska bir is ve ibadetle) yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ancak Rabbine yonel"
        }
    ]
}