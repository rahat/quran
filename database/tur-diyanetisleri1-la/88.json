{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "O her seyi kusatacak olan Kiyamet'in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler var ki, o gun egilmis, zillete dusmustur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calismis, yorulmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kizismis bir atese girer"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Onlara kizgin bir kaynaktan su verilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru bir dikenden baska yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne besler, ne de acligi giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de var ki, o gun nimetle mutludur"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptigindan hosnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos bir soz isitmez"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Yukseltilmis divanlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis koltuklar, yastiklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halilar vardir"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmiyorlar mi o develere, nasil yaratilmis"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge bakmiyorlar mi, nasil yukseltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Bakmiyorlar mi daglara, nasil dikilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere bakmiyorlar mi, nasil yayilmis"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Haydi ogut ver; sen simdi sirf bir ogutcusun"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlarin uzerinde bir zorba degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve kafir olursa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en buyuk azap ile azap edecek"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Kuskusuz onlar done dolasa bize gelecekler"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da bize hesap verecekler"
        }
    ]
}