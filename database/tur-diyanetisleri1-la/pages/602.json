{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys'in ilafi (guven ve baris andlasmalarindan faydalanmalarini saglamak) icin"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Kis ve yaz seferlerinde (faydalandiklari andlasmalarin) kadrini bilmis olmalari icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu Beyt (Kabe)nin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O, kendilerini acliktan kurtararak beslemistir ve her tehlikeye karsi onlara emniyet vermistir"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayani gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste o, oksuzu iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya onayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay haline o namaz kilanlarin ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Kildiklari namazin degerine aldiris etmezler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Gosteris yaparlar onlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardimligi sakinirlar (zekati vermezler)"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Muhakkak biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Oyleyse Rabb'in icin namaz kil ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Muhakkak ki sonu kesik olan, sana bugzedendir"
        }
    ]
}