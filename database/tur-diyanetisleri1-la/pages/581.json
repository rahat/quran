{
    "pages": [
        {
            "chapter": 77,
            "verse": 20,
            "text": "Biz sizi adi bir sudan yaratmadik mi"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu saglam bir yerde oturttuk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir sureye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Demek ki bicimlendirmisiz. Ne guzel bicimlendireniz biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryuzunu bir tokat (toplanma yeri) yapmadik mi"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Gerek diriler, gerekse oluler icin"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yuksek yuksek daglar oturtup da size bir tatli su sunmadik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(Kiyameti yalanlayanlara soyle denir): \"Haydin gidin o yalanladiginiz seye dogru"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Haydi gidin o uc catalli golgeye (cehenneme)"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "O, ne golgelendirir, ne alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, saray gibi kivilcimlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o kivilcimlar, sari sari (erkek deve suruleridir)"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugun, konusamiyacaklari gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Kendilerine izin de verilmez ki, ozur beyan etsinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, iste o hukum gunudur. Sizi ve oncekileri bir araya topladik"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir hileniz varsa beni atlatin"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Kuskusuz takva sahipleri golgeler altinda ve pinar baslarindadir"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Canlarinin cektiginden turlu meyveler arasindadirlar"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "(Onlara): \"Yaptiklariniza karsilik afiyetle yiyin, icin\" (denir)"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Iste biz guzel amel isleyenleri boyle mukafatlandiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin, zevklenin biraz, cunku siz suclularsiniz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "O gun yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara: \"Ruku edin\" denildigi zaman etmezler"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Vay haline o gun yalanlayanlarin"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Artik bundan (Kur'an'dan) sonra hangi soze inanacaklar"
        }
    ]
}