{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok catladigi vakit"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yildizlar dokuldugu vakit"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler yarilip akitildigi vakit"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici disina getirildigi vakit"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi onunden gonderdigini ve neyi geri biraktigini bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Ihsani bol Rabb'ine karsi seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yaratti, seni duzgun yapili kilip olculu bir bicim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni diledigi her hangi bir sekilde parcalardan olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayir hayir, siz cezayi yalanliyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa uzerinizde koruyucular var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli yazicilar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, siz her ne yaparsaniz bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Kuskusuz iyiler nimet icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gunu ona girecekler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar o cehennemin gozunden kacamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gununun ne oldugunu sen bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin nedir acaba o ceza gunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun, hic kimsenin baskasi icin hicbir seye sahip olamadigi gundur. O gun buyruk yalniz Allah'indir"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Eksik olcup tartanlarin vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Onlar insanlardan kendilerine bir sey aldiklari zaman tam olcerler"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Kendileri baskalarina bir sey olctukleri veya tarttiklari zaman eksik olcer ve tartarlar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar tekrar diriltileceklerini zannetmiyorlar mi"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gun icin"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Oyle bir gun ki, insanlar o gun Rabblerinin huzurunda divan duracaklar"
        }
    ]
}