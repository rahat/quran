{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "Buyrugumuz yalniz bir tekdir, goz acip yumma gibidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Andolsun biz, sizin benzerlerinizi hep helak ettik. Ogut alan yok mudur"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Isledikleri her sey, kitaplarda mevcuttur"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Kucuk, buyuk hepsi satir satir yazilmistir"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Takva sahipleri cennetlerde, nur icindedirler"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Guclu padisahin huzurunda dogruluk koltuklarindadirlar"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman (cok merhametli olan Allah)"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kuran'i ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insani yaratti"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyani ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes de ay da bir hesab iledir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler ve agaclar secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Gogu yukseltti ve mizani koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Sakin tartida taskinlik etmeyin"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartiyi adaletle yapin, terazide eksiklik yapmayin"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "(Allah) yeri mahlukat icin (asagiya) koydu"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyvalar ve salkimli hurma agaclari vardir"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yaprakli taneler ve hos kokulu bitkiler vardir"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Allah insani, pismis bir camura benzeyen bir balciktan yaratti"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de halis atesten yaratti"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        }
    ]
