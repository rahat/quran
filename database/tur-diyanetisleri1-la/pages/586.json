{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes katlanip duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yildizlar bulandiginda"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kiyilmaz mallar birakildiginda"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandiginda"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateslendiginde (sulari cekilip, volkanlar halinde ates puskurdugunde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eslestirildiginde (iyiler iyilerle, kotuler kotulerle bir araya toplandiginda)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gomulen kiza soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunahtan dolayi olduruldu?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri acildiginda"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok siyrilip acildiginda"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kizistirildiginda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklastirildiginda"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmis oldugunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Simdi yemin ederim o sinenlere (gunduzleri gozden kaybolan yildizlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akip akip yuvasina gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yoneldigi an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendigi (agardigi) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuskusuz o Kur'an, degerli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci gucludur, Ars'in sahibinin yaninda cok itibarlidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, guvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasinizi cin carpmis degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i acik ufukta gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkinda cimri de degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus bir seytanin sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal boyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemler icin ogutten baska bir sey degildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Icinizden dogru gitmek isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}