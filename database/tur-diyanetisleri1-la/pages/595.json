{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Gunes'e ve onun pariltisina"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Gunes'in ardindan gelen Ay'a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Gunes'i acip ortaya cikaran gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu bicimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kotuluk ve takva kabiliyetini verene yemin olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Elbette nefsini temizleyip parlatan kurtulmustur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gomen de ziyan etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azginligiyla Hakk'i yalanladi"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azginlari ileri atilinca"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'in Rasulu (Salih peygamber) onlara: \"Allah'in devesini ve onun su nobetini gozetin.\" demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onlar peygamberi yalanlayip deveyi kestiler. Rableri de gunahlarini baslarina geciriverdi de orayi dumduz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Oyle ya, Allah bu isin sonundan korkacak degil ya"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Orttugu zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Acildigi zaman gunduze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkegi ve disiyi yaratana and olsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Gercekten sizin isiniz baska baskadir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Bundan boyle her kim malini hayir icin verir ve korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve en guzel olani dogrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Biz onu en kolay yola muvaffak kilacagiz"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Kim de cimrilik eder ve kendini hicbir seye ihtiyaci kalmamis gorur"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en guzeli de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da en zor yola hazirlariz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Cukura yuvarlandigi zaman mali onu kurtaramayacak"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Dogru yolu gostermek muhakkak bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Kuskusuz ahiret de dunya da bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi kopurdukce kopuren bir atese karsi uyardim"
        }
    ]
}