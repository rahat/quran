{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber) Yuzunu eksitti ve dondu"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine ama geldi, diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin, belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya ogut belleyecek de ogut ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama buna ihtiyac hissetmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yoneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun temizlenmemesinden sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama sana can atarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allah'tan korkarak gelmisken"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayir hayir, sakin. Cunku o Kur'an bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artik dileyen onu dusunur"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, degerli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yuksek tutulan tertemiz sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Yazicilarin ellerindedir"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Degerli, iyi yazicilarin"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "O kahrolasi insan, ne nankor sey"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "O yaratan onu hangi seyden yaratti"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan, onu yaratti da bicime koydu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolunu kolaylastirdi"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurdu de kabre koydurdu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra diledigi vakit onu tekrar diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayir hayir, dogrusu o, hic Allah'in emrini tam yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de o insan yiyecegine baksin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz o suyu bol bol doktuk"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra topragi nasil da yardik"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu suretle orada ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzumler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinlikler, hurmaliklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Iri ve sik agacli bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler, cayirlar bitirdik"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Siz ve hayvanlariniz faydalansin diye"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulaklari sagir eden o gurultu geldiginde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gun kisi kacar, kardesinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasindan , babasindan"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Esinden ve ogullarindan"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "Onlardan her birinin o gun basindan asan isi vardir"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Yuzler var ki, o gun paril paril"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Guler, sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yuzler de var ki, o gun tozlanmis"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onlari karanlik burumus"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste onlardir kafirler, haktan sapanlar"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes katlanip duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yildizlar bulandiginda"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kiyilmaz mallar birakildiginda"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandiginda"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateslendiginde (sulari cekilip, volkanlar halinde ates puskurdugunde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eslestirildiginde (iyiler iyilerle, kotuler kotulerle bir araya toplandiginda)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gomulen kiza soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunahtan dolayi olduruldu?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri acildiginda"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok siyrilip acildiginda"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kizistirildiginda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklastirildiginda"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmis oldugunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Simdi yemin ederim o sinenlere (gunduzleri gozden kaybolan yildizlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akip akip yuvasina gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yoneldigi an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendigi (agardigi) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuskusuz o Kur'an, degerli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci gucludur, Ars'in sahibinin yaninda cok itibarlidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, guvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasinizi cin carpmis degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i acik ufukta gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkinda cimri de degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus bir seytanin sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal boyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemler icin ogutten baska bir sey degildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Icinizden dogru gitmek isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}