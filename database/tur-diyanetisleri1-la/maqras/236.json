{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarildigi"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatilip duzlendigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icinde ne varsa attigi ve tamamen bosaldigi"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Kuskusuz sen Rabbine dogru caba ustune caba sarfetmektesin, nihayet O'na varacaksin"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O vakit kitabi sag eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabi arkasindan verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Yetis ey olum!\" diye bagiracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o ailesi icinde sevincli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Hic Rabbine donmeyecegini sanmisti"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayir Rabbi onu gormekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Simdi, yemin ederim o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve icinde barindirdigi seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Derlendigi zaman o aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale gececeksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Boyleyken onlar neden acaba iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsilarinda Kur'an okundugu vakit secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine o nankorler yalanliyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah iclerinde sakladiklarini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun icin onlara elem verici bir azabi mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi ameller isleyenler baskadir. Onlara tukenmez bir ecir vardir"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burclar sahibi gokyuzune"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Vaad olunan o gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sahitlik edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendegin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O cirali atesin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani o atesin basina oturmuslar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Muminlere yaptiklarini seyrediyorlardi"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Muminlere kizmalarinin sebebi de, onlarin yalniz cok guclu ve ovguye layik olan Allah'a iman etmeleri idi"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, goklerin ve yerin hukumranligi O'nundur ve Allah her seye sahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Inanan erkek ve kadinlara iskence yapip sonra da tevbe etmeyenlere cehennem azabi ve yangin azabi vardir"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Inanan ve iyi amel yapanlar icin de altindan irmaklar akan cennetler vardir. Iste buyuk kurtulus odur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Kuskusuz Rabbinin yakalamasi serttir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Yoktan o yaratir ve tekrar o diriltir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bununla beraber cok bagislayandir, cok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars'in sahibidir, yucedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigini yapandir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O ordularin kissasi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud'un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Fakat o inkarcilar hala bir yalanlama icinde"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Oysa Allah onlari arkalarindan kusatmistir"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayir o serefli bir Kur'an'dir"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz'dadir"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o goge ve Tarik'a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarik nedir, bildin mi"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, karanligi delen yildizdir"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hicbir nefis yoktur ki basinda bir denetleyici bulunmasin"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun icin insan neden yaratildigina bir baksin"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atilan bir sudan yaratildi"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "O su, erkegin sulbu ile kadinin gogus kemikleri arasindan cikar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette Allah'in onu dondurmeye gucu yeter"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gun butun sirlar yoklanip, meydana cikarilir"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Insanin o gun ne bir gucu vardir, ne de bir yardimcisi"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o donuslu goge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "O yarilip catlayan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kuskusuz Kur'an, ayirici bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, kafirler hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine karsilik veririm"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun icin sen kafirlere muhlet ver, onlara az bir zaman tani"
        }
    ]
}