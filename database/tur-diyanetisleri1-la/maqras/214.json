{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Olacak vak'a oldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun olusunu yalanlayacak kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alcalticidir, yukselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsildigi"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar serpildikce serpildigi"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagilip toz duman haline geldigi"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler uc sinif oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagin adamlari (var ya) ne mutludurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solun adamlari ise ne ugursuzdurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Onde olanlar (var ya), onlar oncudurler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste o yaklastirilanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Cogu onceki ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazi da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Onlar) cevherlerle islenmis tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsilikli olarak onlarin uzerinde yaslanirlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Cevrelerinde, olumsuzluge ulasmis gencler dolasirlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagindan doldurulmus, testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan ne baslari agritilir, ne de akillari giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyvalar"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarinin cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sakli inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptiklarina karsilik olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir soz ve gunaha sokan bir laf isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Duyduklari soz, yalniz \"selam\", \"selam\" dir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagin adamlari, nedir o sagin adamlari"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dalbasti kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva dizili muzlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamis golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fiskiran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Pek cok meyva arasinda"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yukseltilmis dosekler ustundedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadinlari yeniden insa ettik (yarattik)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onlari bakireler yaptik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Hep yasit sevgililer"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sagin adamlari icindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir cogu oncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir cogu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solun adamlari, nedir o solcular"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Iclerine isleyen bir ates ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kapkara dumandan bir golge altindadirlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ki ne serindir, ne de faydali"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar bundan once varlik icinde sefahete dalmislardi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahi islemekte israr ediyorlardi"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardi ki: \"Biz olup, toprak ve kemik yigini olduktan sonra, biz mi bir daha diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Onceki atalarimizda mi"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Oncekiler ve sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir gunun belli vaktinde mutlaka toplanacaklardir"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapik yalanlayicilar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir agactan, zakkum agacindan yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karinlarinizi hep onunla dolduracaksiniz"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ustune de kaynar su iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susuzluk illetine tutulmus develerin icisi gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Iste ceza gununde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Biz sizi yarattik; tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attiginiz meniyi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratiyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranizda olumu takdir eden biziz ve bizim onumuze gecilmez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Boylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediginiz bir yaratilista tekrar var edelim diye (boyle yapiyoruz)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratilisi bildiniz. Dusunup ibret almaniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginizi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik, onu kuru bir cop yapardik. Hayret eder dururdunuz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Dogrusu borc altina girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Dogrusu, biz yoksul birakildik\" (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ictiginiz suya baktiniz mi"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardik. O halde sukretseniz ya"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Bir de o caktiginiz atesi gordunuz mu"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacini siz mi yarattiniz, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve colden gelip gecenlere bir fayda yaptik"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse buyuk Rabbinin adini yucelt"
        }
    ]
}