{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Smak svijeta"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Šta je smak svijeta"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "i šta ti znaš o Smaku svijeta"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Toga dana će ljudi biti kao leptiri raštrkani"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "a planine kao šarena vuna iščupana"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Onaj u koga njegova djela budu teška"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "u ugodnu životu će živjeti"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "a onaj u koga njegova djela budu lahka"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "boravište će mu bezdan biti"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "A znaš li ti šta će to biti"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "vatra užarena"
        }
    ]
}