{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Tako Mi onih koji čupaju grubo"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "i onih koji vade blago"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "i onih koji plove brzo"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "pa naređenja izvršavaju žurno"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "i sređuju ono što nije sređeno"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "na Dan kada se Zemlja potresom zatrese"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "za kojim će slijediti slijedeći"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "srca toga dana biće uznemirena"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "a pogledi njihovi oboreni"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Ovi pitaju: \"Zar ćemo, zaista, biti opet ono što smo sada"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Zar kad truhle kosti postanemo"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "i još kažu: \"E tada bismo mi bili izgubljeni"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "A biće to samo povik jedan"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "i evo njih - na Zemlji"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Da li je do tebe doprla vijest o Musau"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "kad ga je Gospodar njegov u svetoj dolini Tuva zovnuo"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Idi faraonu, on se osilio"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "i reci: Da li bi ti da se očistiš"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "da te o Gospodaru tvome poučim, pa da Ga se bojiš"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "I onda mu je najveće čudo pokazao"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "ali je on porekao i nije poslušao"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "već se okrenuo i potrudio"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "i sabrao i povikao"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ja sam gospodar vaš najveći!\" - on je rekao"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "i Allah ga je i za ove i za one prijašnje riječi kaznio"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "To je pouka za onoga koji se bude Allaha bojao"
        }
    ]
}