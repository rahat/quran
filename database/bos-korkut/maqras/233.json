{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "O čemu oni jedne druge pitaju"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O vijesti velikoj"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "o kojoj oni različita mišljenja imaju"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "To nije dobro, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "I još jednom, to nije dobro, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Zar Zemlju posteljom nismo učinili"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "i planine stubovima"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "i vas kao parove stvorili"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "i san vaš počinkom učinili"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "i noć pokrivačem dali"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "i dan za privređivanje odredili"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "i iznad vas sedam silnih sazidali"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "i svjetiljku plamteću postavili"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Mi iz oblaka vodu obilno spuštamo"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "i činimo da uz njenu pomoć raste žito i bilje"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i bašče guste"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dan sudnji je, zaista, već određen"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Dan kada će se u rog puhnuti, pa ćete vi, sve skupina po skupina, dolaziti"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "i nebo će se otvoriti i mnogo kapija imati"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "i planine će se zdrobiti i priviđenje će biti"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Džehennem će zasjeda postati"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "nasilnicima mjesto povratka"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "u kome će zauvijek ostati"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "u njemu svježine neće osjetiti, ni pića okusiti"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "osim vrele vode i kapljevine"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "kazne prikladne"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Oni nisu očekivali da će račun polagati"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "i dokaze Naše su pretjerano poricali"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "a Mi smo sve pobrojali i zapisali"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "pa trpite, mučenje ćemo vam sve gorim učiniti"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "A onima koji su se Allaha bojali želje će se ostvariti"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "bašče i vinogradi"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "i djevojke mlade, godina istih"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "i pehari puni"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Tamo prazne besjede i neistinu neće slušati"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Gospodar tvoj će ih darom obilnim nagraditi"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Gospodar nebesa i Zemlje i onoga što je između njih, Milostivi, kome neće smjeti niko prvi riječ prozboriti"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "na Dan kada Džibril i meleki budu u redove poredani, kada će samo onaj kome Milostivi dozvoli govoriti, a istinu će reći"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "To je neizbježan Dan, pa ko hoće, Gospodaru svome će, kao utočištu, poći"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Mi vas na skoru patnju upozoravamo, na Dan u kome će čovjek djela ruku svojih vidjeti, a nevjernik uzviknuti: \"Da sam, bogdo, zemlja ostao"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Tako Mi onih koji čupaju grubo"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "i onih koji vade blago"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "i onih koji plove brzo"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "pa naređenja izvršavaju žurno"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "i sređuju ono što nije sređeno"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "na Dan kada se Zemlja potresom zatrese"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "za kojim će slijediti slijedeći"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "srca toga dana biće uznemirena"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "a pogledi njihovi oboreni"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Ovi pitaju: \"Zar ćemo, zaista, biti opet ono što smo sada"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Zar kad truhle kosti postanemo"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "i još kažu: \"E tada bismo mi bili izgubljeni"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "A biće to samo povik jedan"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "i evo njih - na Zemlji"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Da li je do tebe doprla vijest o Musau"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "kad ga je Gospodar njegov u svetoj dolini Tuva zovnuo"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Idi faraonu, on se osilio"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "i reci: Da li bi ti da se očistiš"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "da te o Gospodaru tvome poučim, pa da Ga se bojiš"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "I onda mu je najveće čudo pokazao"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "ali je on porekao i nije poslušao"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "već se okrenuo i potrudio"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "i sabrao i povikao"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ja sam gospodar vaš najveći!\" - on je rekao"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "i Allah ga je i za ove i za one prijašnje riječi kaznio"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "To je pouka za onoga koji se bude Allaha bojao"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "A šta je teže: vas ili nebo stvoriti? On ga je sazdao"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "svod njegov visoko digao i usavršio"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "noći njegove mračnim, a dane svjetlim učinio"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Poslije toga je Zemlju poravnao"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "iz nje je vodu i pašnjake izveo"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "i planine nepomičnim učinio"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "na uživanje vama i stoci vašoj"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "A kada dođe nevolja najveća"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Dan kada se čovjek bude sjećao onoga što je radio"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "i kada se Džehennem svakome ko vidi bude ukazao"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "onda će onome koji je obijestan bio"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "i život na ovom svijetu više volio"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Džehennem prebivalište postati sigurno"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "A onome koji je pred dostojanstvom Gospodara svoga strepio i dušu od prohtjeva uzdržao"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Džennet će boravište biti sigurno"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Pitaju te o Smaku svijeta: \"Kada će se dogoditi"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Ti ne znaš, pa kako da o njemu zboriš"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "o njemu samo Gospodar tvoj zna"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Tvoja opomena će koristiti samo onome koji ga se bude bojao"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "a njima će se učiniti, onoga Dana kada ga dožive, da su samo jedno veče ili jedno jutro njezino ostali"
        }
    ]
}