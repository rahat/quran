{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Sε ͻsoro mu sunsuan"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Na sε Nsoromma tete hwe na etu pete"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Na sε ͻpo yiri na ebu faso"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Na sε Adakamena so buebue a"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Ɛna ͻkra biara behunu deε (ͻyε de too) n’anim ne deε εkaa akyire"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Onipa, εdeεn adeε paa na adaadaa wo wͻ wo Wura Adom Hene no ho"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "(Wo Wura) no a Ɔbͻͻ wo, nwenee wo siesiee wo, totoo wo pεpεεpε"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "De wo too mfonini biara a Ɔpε mu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Aane, nanso monnye Atemmuo no nni"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Nokorε sε, (Soro abͻfoͻ) Awεnfoͻ ka moho"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Atwerεfoͻ Animuonyamfoͻ no"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Wͻ’nim deε moyε (nyinaa)"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Nokorε sε, apapafoͻ no bεwͻ anigyeε mu"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Nokorε nso sε, abͻneεfoͻ no bεkͻ Amanehunu gya no mu"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Wͻ’bεkͻ mu wͻ Akatua da no"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Na wͻ’mmfri mu"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ԑdeεn na εbεkyerε wo sεdeε Akatua da no siteε"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Bio, εdeεn na εbεkyerε wo sεdeε Akatua da no siteε"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ɛyε Da a, ͻkra bi nni tumi a ͻde bεboa ͻkra bi wͻ biribi ho; na saa Da no tumi nyinaa wͻ Nyankopͻn"
        }
    ]
}