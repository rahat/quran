{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kogda nebo raskoletsya"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "kogda tela nebesnyye osyplyutsya"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kogda morya perel'yutsya i smeshayutsya (ili vysokhnut)"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kogda mogily perevernutsya"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "togda kazhdaya dusha uznayet, chto ona sovershila i chto ostavila posle sebya"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O chelovek! Chto vvelo tebya v zabluzhdeniye otnositel'no tvoyego Velikodushnogo Gospoda"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Kotoryy sotvoril tebya i sdelal tvoy oblik sovershennym i sorazmerennym"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "On slozhil tebya v tom oblike, v kakom pozhelal"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "No net! Vy zhe schitayete lozh'yu vozdayaniye"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Voistinu, nad vami yest' khraniteli"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "blagorodnyye pistsy"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "kotoryye znayut o tom, chto vy sovershayete"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Voistinu, blagochestivyye okazhutsya v blazhenstve"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Voistinu, greshniki okazhutsya v Adu"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "kuda oni voydut v Den' vozdayaniya"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oni ne smogut izbezhat' etogo"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Otkuda ty mog znat', chto takoye Den' vozdayaniya"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Da, otkuda ty mog znat', chto takoye Den' vozdayaniya"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "V tot den' ni odna dusha ne smozhet nichem pomoch' drugoy, i vlast' v tot den' budet prinadlezhat' Allakhu"
        }
    ]
}