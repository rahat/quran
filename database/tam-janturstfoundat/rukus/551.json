{
    "rukus": [
        {
            "chapter": 109,
            "verse": 1,
            "text": "(நபியே!) நீர் சொல்வீராக: \"காஃபிர்களே"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "நீங்கள் வணங்குபவற்றை நான் வணங்கமாட்டேன்"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "இன்னும், நான் வணங்குகிறவனை நீங்கள் வணங்குகிறவர்களல்லர்"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "அன்றியும், நீங்கள் வணங்குபவற்றை நான் வணங்குபவனல்லன்"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "மேலும், நான் வணங்குபவனை நீங்கள் வணங்குபவர்கள் அல்லர்"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "உங்களுக்கு உங்களுடைய மார்க்கம்; எனக்கு என்னுடைய மார்க்கம்"
        }
    ]
}