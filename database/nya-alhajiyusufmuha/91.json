{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Pali dzuwa ndi kuwala kwake"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ndi pali mwezi umene umatuluka dzuwa litalowa"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Ndi masana pamene kumayera"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Ndi pali usiku umene umabisa"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Ndi pali Kumwamba ndi Iye amene adakulenga"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Ndi pali dziko lapansi ndi Iye amene analitambasula"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Ndi pali mzimu ndi Iye amene adaulenga"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Ndi kumupatsa iye nzeru zodziwa choipa ndi chabwino"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Ndithudi wopambana ndi amene amadziyeretsa"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ndipo wolephera ndiye amene wadzidetsa"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Anthu a Thamoud adakana Mtumwi wawo poukiramoyerekedwa"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Pamenemunthuolakwakwambiri adayambitsa chipolowe"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Ndipo Mthenga wa Mulungu anati kwa iwo: “Samalirani ngamira ya ikazi ya Mulungu ndi tsiku lake lomwa madzi!”"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Iwo sadakhulupirire ayi ndipo ngamirayo adaipha. Motero Ambuye wawo adawaononga chifukwa cha machimo awo ndipo adafafaniza onse mosasankha"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Iye sadaope chotsatira chake"
        }
    ]
}