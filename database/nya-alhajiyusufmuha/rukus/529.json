{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Lemekeza dzina la Ambuye wako wapamwambamwamba"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Amene adalenga zonse ndi kuzikonza bwinobwino"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Amene adalamula tsogolo lawo ndi kuwatsogolera"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Amene amameretsa msipu"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Ndipo amausanduliza kukhala udzu ouma"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Tidzakuphunzitsa kulakatula chivumbulutso chathu ndipo sudzaiwala"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Kupatula chokhacho chimene Mulungu amafuna. Ndithudi Iye amadziwa chilichonse chooneka ndi chobisika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ndipo Ife tidzakufupikitsira, m’njira yaifupi"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Motero kumbutsa mwina chikumbutso chingawathandize"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Chikumbutso chidzalandiridwa ndi iye amene amaopa Mulungu"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Koma munthu wochimwa adzachisiya"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Amene adzaponyedwa mu ng’anjo yamoto ndi kulawa ululu wake"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Mmene iye sadzafa kapena kukhala ndi moyo"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Zoonadi iye amene adziyeretsa adzakhala wopambana"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Amene amakumbukira dzina la Ambuye wake ndipo amapemphera panthawi yake"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Iyayi, koma inu mumasangalala ndi zinthu za m’moyo uno"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ndipo moyo umene uli nkudza ndi wabwino ndi wosatha"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ndithudi! Zonsezi zidalembedwa mu Mabuku akale a Mulungu"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Mabuku a Abrahamu ndi Mose"
        }
    ]
}