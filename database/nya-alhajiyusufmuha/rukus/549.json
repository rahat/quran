{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Kodi wamuona munthu amene amakana kuti kuli tsiku la chiweruzo"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iye ndiye amene amazunza mwana wamasiye"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ndipo sakakamiza anthu ena kuti azidyetsa anthu osauka"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Motero tsoka kwa iwo amene amapemphera"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Amene salabadira mapemphero awo"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Amene amachita zabwino pofuna kuti ena awaone"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ndipo amakana kupereka chaulere"
        }
    ]
}