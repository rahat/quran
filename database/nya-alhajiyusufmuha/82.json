{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Pamene thambo lidzang’ambika"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Pamene nyenyezi zidzagwa ndi kubalalitsidwa"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Ndi pamene nyanja zikuluzikulu zidzaphulika"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Pamene manda adzatseguka"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Pamenepo Mzimu uliwonse udzadziwa chimene udatumiza ndi chimene udasiya m’mbuyo"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "oh Iwe munthu! Kodi ndi chiyani chikukunamiza kuti usiye kutsatira malamulo a Ambuye wako Wolemekezeka"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Amene adakulenga iwe ndi kukukonza kuti uzioneka bwino monga mmene uonekeramu"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Ndi nkhope ina iliyonse imene idamukondweretsa anakulenga iwe"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Iyayi! Koma inu mukukana kuti kudzakhala tsiku lachiweruzo"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Koma pakati panu pali ena amene ali kukuyang’anirani"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Olemekezeka ndi odziwa kulemba"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Iwo amadziwa chilichonse chimene mumachita"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Ndithudi anthu onse angwiro adzakhala mu mtendere"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ndipo, ndithudi, anthu onse oipa adzakhala ku Gahena"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Imene iwo adzalowako ndi kulawa malawi ake patsiku lachiweruzo"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Iwo sadzatha kuthawa ayi"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Kodi chidzakuuza ndi chiani za tsiku lachiweruzo"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Tinenanso kodi chidzakuuza ndi chiani za tsiku lachiweruzo"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ndi tsiku limene mzimu uliwonse sudzatha kuthandiza wina aliyense ndipo Mulungu yekha ndiye amene adzaweruza"
        }
    ]
}