        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "الَّذِيۡنَ يَجۡعَلُوۡنَ مَعَ اللّٰهِ اِلٰهًا اٰخَرَۚ فَسَوۡفَ يَعۡلَمُوۡنَ"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "وَلَقَدۡ نَعۡلَمُ اَنَّكَ يَضِيۡقُ صَدۡرُكَ بِمَا يَقُوۡلُوۡنَۙ‏"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "فَسَبِّحۡ بِحَمۡدِ رَبِّكَ وَكُنۡ مِّنَ السّٰجِدِيۡنَۙ‏"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "وَاعۡبُدۡ رَبَّكَ حَتّٰي يَاۡتِيَكَ الۡيَقِيۡنُࣖ‏"
        }
    ]
