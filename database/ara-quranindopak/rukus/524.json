{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "اِذَا السَّمَآءُ انۡفَطَرَتۡۙ‏"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "وَاِذَا الۡكَوَاكِبُ انۡتَثَرَتۡۙ‏"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "وَاِذَا الۡبِحَارُ فُجِّرَتۡۙ‏"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "وَاِذَا الۡقُبُوۡرُ بُعۡثِرَتۡۙ‏"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "عَلِمَتۡ نَفۡسٌ مَّا قَدَّمَتۡ وَاَخَّرَتۡؕ‏"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "يٰ٘اَيُّهَا الۡاِنۡسَانُ مَا غَرَّكَ بِرَبِّكَ الۡكَرِيۡمِۙ‏"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "الَّذِيۡ خَلَقَكَ فَسَوّٰىكَ فَعَدَلَكَۙ‏"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "فِيۡ٘ اَيِّ صُوۡرَةٍ مَّا شَآءَ رَكَّبَكَؕ‏"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "كَلَّا بَلۡ تُكَذِّبُوۡنَ بِالدِّيۡنِۙ‏"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "وَاِنَّ عَلَيۡكُمۡ لَحٰفِظِيۡنَۙ‏"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كِرَامًا كٰتِبِيۡنَۙ‏"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "يَعۡلَمُوۡنَ مَا تَفۡعَلُوۡنَ"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "اِنَّ الۡاَبۡرَارَ لَفِيۡ نَعِيۡمٍۙ‏"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "وَّاِنَّ الۡفُجَّارَ لَفِيۡ جَحِيۡمٍۙ‏"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "يَّصۡلَوۡنَهَا يَوۡمَ الدِّيۡنِ"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "وَمَا هُمۡ عَنۡهَا بِغَآئِبِيۡنَؕ‏"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "وَمَا٘ اَدۡرٰىكَ مَا يَوۡمُ الدِّيۡنِۙ‏"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ثُمَّ مَا٘ اَدۡرٰىكَ مَا يَوۡمُ الدِّيۡنِؕ‏"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "يَوۡمَ لَا تَمۡلِكُ نَفۡسٌ لِّنَفۡسٍ شَيۡـًٔاؕ وَالۡاَمۡرُ يَوۡمَئِذٍ لِّلّٰهِࣖ‏"
        }
    ]
}