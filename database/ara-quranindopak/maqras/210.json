{
    "maqras": [
        {
            "chapter": 52,
            "verse": 24,
            "text": "وَيَطُوۡفُ عَلَيۡهِمۡ غِلۡمَانٌ لَّهُمۡ كَاَنَّهُمۡ لُؤۡلُؤٌ مَّكۡنُوۡنٌ"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَاَقۡبَلَ بَعۡضُهُمۡ عَلٰي بَعۡضٍ يَّتَسَآءَلُوۡنَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُوۡ٘ا اِنَّا كُنَّا قَبۡلُ فِيۡ٘ اَهۡلِنَا مُشۡفِقِيۡنَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ اللّٰهُ عَلَيۡنَا وَوَقٰىنَا عَذَابَ السَّمُوۡمِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "اِنَّا كُنَّا مِنۡ قَبۡلُ نَدۡعُوۡهُؕ اِنَّهٗ هُوَ الۡبَرُّ الرَّحِيۡمُࣖ‏"
        },
        {
            "chapter": 52,
            "verse": 29,
            "text": "فَذَكِّرۡ فَمَا٘ اَنۡتَ بِنِعۡمَتِ رَبِّكَ بِكَاهِنٍ وَّلَا مَجۡنُوۡنٍؕ‏"
        },
        {
            "chapter": 52,
            "verse": 30,
            "text": "اَمۡ يَقُوۡلُوۡنَ شَاعِرٌ نَّتَرَبَّصُ بِهٖ رَيۡبَ الۡمَنُوۡنِ"
        },
        {
            "chapter": 52,
            "verse": 31,
            "text": "قُلۡ تَرَبَّصُوۡا فَاِنِّيۡ مَعَكُمۡ مِّنَ الۡمُتَرَبِّصِيۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 32,
            "text": "اَمۡ تَاۡمُرُهُمۡ اَحۡلَامُهُمۡ بِهٰذَا٘ اَمۡ هُمۡ قَوۡمٌ طَاغُوۡنَۚ‏"
        },
        {
            "chapter": 52,
            "verse": 33,
            "text": "اَمۡ يَقُوۡلُوۡنَ تَقَوَّلَهٗۚ بَلۡ لَّا يُؤۡمِنُوۡنَۚ‏"
        },
        {
            "chapter": 52,
            "verse": 34,
            "text": "فَلۡيَاۡتُوۡا بِحَدِيۡثٍ مِّثۡلِهٖ٘ اِنۡ كَانُوۡا صٰدِقِيۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 35,
            "text": "اَمۡ خُلِقُوۡا مِنۡ غَيۡرِ شَيۡءٍ اَمۡ هُمُ الۡخٰلِقُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 36,
            "text": "اَمۡ خَلَقُوا السَّمٰوٰتِ وَالۡاَرۡضَۚ بَلۡ لَّا يُوۡقِنُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 37,
            "text": "اَمۡ عِنۡدَهُمۡ خَزَآئِنُ رَبِّكَ اَمۡ هُمُ الۡمُصَۜيۡطِرُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 38,
            "text": "اَمۡ لَهُمۡ سُلَّمٌ يَّسۡتَمِعُوۡنَ فِيۡهِۚ فَلۡيَاۡتِ مُسۡتَمِعُهُمۡ بِسُلۡطٰنٍ مُّبِيۡنٍؕ‏"
        },
        {
            "chapter": 52,
            "verse": 39,
            "text": "اَمۡ لَهُ الۡبَنٰتُ وَلَكُمُ الۡبَنُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 40,
            "text": "اَمۡ تَسۡـَٔلُهُمۡ اَجۡرًا فَهُمۡ مِّنۡ مَّغۡرَمٍ مُّثۡقَلُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 41,
            "text": "اَمۡ عِنۡدَهُمُ الۡغَيۡبُ فَهُمۡ يَكۡتُبُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 42,
            "text": "اَمۡ يُرِيۡدُوۡنَ كَيۡدًاؕ فَالَّذِيۡنَ كَفَرُوۡا هُمُ الۡمَكِيۡدُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 43,
            "text": "اَمۡ لَهُمۡ اِلٰهٌ غَيۡرُ اللّٰهِؕ سُبۡحٰنَ اللّٰهِ عَمَّا يُشۡرِكُوۡنَ"
        },
        {
            "chapter": 52,
            "verse": 44,
            "text": "وَاِنۡ يَّرَوۡا كِسۡفًا مِّنَ السَّمَآءِ سَاقِطًا يَّقُوۡلُوۡا سَحَابٌ مَّرۡكُوۡمٌ"
        },
        {
            "chapter": 52,
            "verse": 45,
            "text": "فَذَرۡهُمۡ حَتّٰي يُلٰقُوۡا يَوۡمَهُمُ الَّذِيۡ فِيۡهِ يُصۡعَقُوۡنَۙ‏"
        },
        {
            "chapter": 52,
            "verse": 46,
            "text": "يَوۡمَ لَا يُغۡنِيۡ عَنۡهُمۡ كَيۡدُهُمۡ شَيۡـًٔا وَّلَا هُمۡ يُنۡصَرُوۡنَؕ‏"
        },
        {
            "chapter": 52,
            "verse": 47,
            "text": "وَاِنَّ لِلَّذِيۡنَ ظَلَمُوۡا عَذَابًا دُوۡنَ ذٰلِكَ وَلٰكِنَّ اَكۡثَرَهُمۡ لَا يَعۡلَمُوۡنَ"
        },
        {
            "chapter": 52,
            "verse": 48,
            "text": "وَاصۡبِرۡ لِحُكۡمِ رَبِّكَ فَاِنَّكَ بِاَعۡيُنِنَا وَسَبِّحۡ بِحَمۡدِ رَبِّكَ حِيۡنَ تَقُوۡمُۙ‏"
        },
        {
            "chapter": 52,
            "verse": 49,
            "text": "وَمِنَ الَّيۡلِ فَسَبِّحۡهُ وَاِدۡبَارَ النُّجُوۡمِࣖ‏"
        },
        {
            "chapter": 53,
            "verse": 1,
            "text": "وَالنَّجۡمِ اِذَا هَوٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَاحِبُكُمۡ وَمَا غَوٰيۚ‏"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا يَنۡطِقُ عَنِ الۡهَوٰيؕۚ‏"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "اِنۡ هُوَ اِلَّا وَحۡيٌ يُّوۡحٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهٗ شَدِيۡدُ الۡقُوٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُوۡ مِرَّةٍؕ فَاسۡتَوٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهُوَ بِالۡاُفُقِ الۡاَعۡلٰيؕ‏"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلّٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوۡسَيۡنِ اَوۡ اَدۡنٰيۚ‏"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَاَوۡحٰ٘ي اِلٰي عَبۡدِهٖ مَا٘ اَوۡحٰيؕ‏"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ الۡفُؤَادُ مَا رَاٰي"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "اَفَتُمٰرُوۡنَهٗ عَلٰي مَا يَرٰي"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدۡ رَاٰهُ نَزۡلَةً اُخۡرٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِنۡدَ سِدۡرَةِ الۡمُنۡتَهٰي"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِنۡدَهَا جَنَّةُ الۡمَاۡوٰيؕ‏"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "اِذۡ يَغۡشَي السِّدۡرَةَ مَا يَغۡشٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ الۡبَصَرُ وَمَا طَغٰي"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدۡ رَاٰي مِنۡ اٰيٰتِ رَبِّهِ الۡكُبۡرٰي"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "اَفَرَءَيۡتُمُ اللّٰتَ وَالۡعُزّٰيۙ‏"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنٰوةَ الثَّالِثَةَ الۡاُخۡرٰي"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "اَلَكُمُ الذَّكَرُ وَلَهُ الۡاُنۡثٰي"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلۡكَ اِذًا قِسۡمَةٌ ضِيۡزٰي"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "اِنۡ هِيَ اِلَّا٘ اَسۡمَآءٌ سَمَّيۡتُمُوۡهَا٘ اَنۡتُمۡ وَاٰبَآؤُكُمۡ مَّا٘ اَنۡزَلَ اللّٰهُ بِهَا مِنۡ سُلۡطٰنٍؕ اِنۡ يَّتَّبِعُوۡنَ اِلَّا الظَّنَّ وَمَا تَهۡوَي الۡاَنۡفُسُۚ وَلَقَدۡ جَآءَهُمۡ مِّنۡ رَّبِّهِمُ الۡهُدٰيؕ‏"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "اَمۡ لِلۡاِنۡسَانِ مَا تَمَنّٰيؗۖ‏"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلّٰهِ الۡاٰخِرَةُ وَالۡاُوۡلٰيࣖ‏"
        }
    ]
}