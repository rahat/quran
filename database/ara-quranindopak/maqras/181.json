{
    "maqras": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "فَنَبَذۡنٰهُ بِالۡعَرَآءِ وَهُوَ سَقِيۡمٌۚ‏"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وَاَنۭۡ بَتۡنَا عَلَيۡهِ شَجَرَةً مِّنۡ يَّقۡطِيۡنٍۚ‏"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وَاَرۡسَلۡنٰهُ اِلٰي مِائَةِ اَلۡفٍ اَوۡ يَزِيۡدُوۡنَۚ‏"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فَاٰمَنُوۡا فَمَتَّعۡنٰهُمۡ اِلٰي حِيۡنٍؕ‏"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فَاسۡتَفۡتِهِمۡ اَلِرَبِّكَ الۡبَنَاتُ وَلَهُمُ الۡبَنُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "اَمۡ خَلَقۡنَا الۡمَلٰٓئِكَةَ اِنَاثًا وَّهُمۡ شٰهِدُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "اَلَا٘ اِنَّهُمۡ مِّنۡ اِفۡكِهِمۡ لَيَقُوۡلُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "وَلَدَ اللّٰهُۙ وَاِنَّهُمۡ لَكٰذِبُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "اَصۡطَفَي الۡبَنَاتِ عَلَي الۡبَنِيۡنَؕ‏"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "مَا لَكُمۡࣞ كَيۡفَ تَحۡكُمُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "اَفَلَا تَذَكَّرُوۡنَۚ‏"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "اَمۡ لَكُمۡ سُلۡطٰنٌ مُّبِيۡنٌۙ‏"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فَاۡتُوۡا بِكِتٰبِكُمۡ اِنۡ كُنۡتُمۡ صٰدِقِيۡنَ"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وَجَعَلُوۡا بَيۡنَهٗ وَبَيۡنَ الۡجِنَّةِ نَسَبًاؕ وَلَقَدۡ عَلِمَتِ الۡجِنَّةُ اِنَّهُمۡ لَمُحۡضَرُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سُبۡحٰنَ اللّٰهِ عَمَّا يَصِفُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "اِلَّا عِبَادَ اللّٰهِ الۡمُخۡلَصِيۡنَ"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فَاِنَّكُمۡ وَمَا تَعۡبُدُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مَا٘ اَنۡتُمۡ عَلَيۡهِ بِفٰتِنِيۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "اِلَّا مَنۡ هُوَ صَالِ الۡجَحِيۡمِ"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وَمَا مِنَّا٘ اِلَّا لَهٗ مَقَامٌ مَّعۡلُوۡمٌۙ‏"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وَّاِنَّا لَنَحۡنُ الصَّآفُّوۡنَۚ‏"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وَاِنَّا لَنَحۡنُ الۡمُسَبِّحُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وَاِنۡ كَانُوۡا لَيَقُوۡلُوۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لَوۡ اَنَّ عِنۡدَنَا ذِكۡرًا مِّنَ الۡاَوَّلِيۡنَۙ‏"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لَكُنَّا عِبَادَ اللّٰهِ الۡمُخۡلَصِيۡنَ"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فَكَفَرُوۡا بِهٖ فَسَوۡفَ يَعۡلَمُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "وَلَقَدۡ سَبَقَتۡ كَلِمَتُنَا لِعِبَادِنَا الۡمُرۡسَلِيۡنَۚۖ‏"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "اِنَّهُمۡ لَهُمُ الۡمَنۡصُوۡرُوۡنَࣕ‏"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وَاِنَّ جُنۡدَنَا لَهُمُ الۡغٰلِبُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فَتَوَلَّ عَنۡهُمۡ حَتّٰي حِيۡنٍۙ‏"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وَّاَبۡصِرۡهُمۡ فَسَوۡفَ يُبۡصِرُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "اَفَبِعَذَابِنَا يَسۡتَعۡجِلُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فَاِذَا نَزَلَ بِسَاحَتِهِمۡ فَسَآءَ صَبَاحُ الۡمُنۡذَرِيۡنَ"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وَتَوَلَّ عَنۡهُمۡ حَتّٰي حِيۡنٍۙ‏"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وَّاَبۡصِرۡ فَسَوۡفَ يُبۡصِرُوۡنَ"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سُبۡحٰنَ رَبِّكَ رَبِّ الۡعِزَّةِ عَمَّا يَصِفُوۡنَۚ‏"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وَسَلٰمٌ عَلَي الۡمُرۡسَلِيۡنَۚ‏"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وَالۡحَمۡدُ لِلّٰهِ رَبِّ الۡعٰلَمِيۡنَࣖ‏"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "صٓ وَالۡقُرۡاٰنِ ذِي الذِّكۡرِؕ‏"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "بَلِ الَّذِيۡنَ كَفَرُوۡا فِيۡ عِزَّةٍ وَّشِقَاقٍ"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "كَمۡ اَهۡلَكۡنَا مِنۡ قَبۡلِهِمۡ مِّنۡ قَرۡنٍ فَنَادَوۡا وَّلَاتَ حِيۡنَ مَنَاصٍ"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "وَعَجِبُوۡ٘ا اَنۡ جَآءَهُمۡ مُّنۡذِرٌ مِّنۡهُمۡؗ وَقَالَ الۡكٰفِرُوۡنَ هٰذَا سٰحِرٌ كَذَّابٌۚۖ‏"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "اَجَعَلَ الۡاٰلِهَةَ اِلٰهًا وَّاحِدًاۚۖ اِنَّ هٰذَا لَشَيۡءٌ عُجَابٌ"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "وَانۡطَلَقَ الۡمَلَاُ مِنۡهُمۡ اَنِ امۡشُوۡا وَاصۡبِرُوۡا عَلٰ٘ي اٰلِهَتِكُمۡۚۖ اِنَّ هٰذَا لَشَيۡءٌ يُّرَادُۚ‏"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "مَا سَمِعۡنَا بِهٰذَا فِي الۡمِلَّةِ الۡاٰخِرَةِۚۖ اِنۡ هٰذَا٘ اِلَّا اخۡتِلَاقٌۚۖ‏"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "ءَاُنۡزِلَ عَلَيۡهِ الذِّكۡرُ مِنۭۡ بَيۡنِنَاؕ بَلۡ هُمۡ فِيۡ شَكٍّ مِّنۡ ذِكۡرِيۡۚ بَلۡ لَّمَّا يَذُوۡقُوۡا عَذَابِؕ‏"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "اَمۡ عِنۡدَهُمۡ خَزَآئِنُ رَحۡمَةِ رَبِّكَ الۡعَزِيۡزِ الۡوَهَّابِۚ‏"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "اَمۡ لَهُمۡ مُّلۡكُ السَّمٰوٰتِ وَالۡاَرۡضِ وَمَا بَيۡنَهُمَاࣞ فَلۡيَرۡتَقُوۡا فِي الۡاَسۡبَابِ"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "جُنۡدٌ مَّا هُنَالِكَ مَهۡزُوۡمٌ مِّنَ الۡاَحۡزَابِ"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "كَذَّبَتۡ قَبۡلَهُمۡ قَوۡمُ نُوۡحٍ وَّعَادٌ وَّفِرۡعَوۡنُ ذُو الۡاَوۡتَادِۙ‏"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "وَثَمُوۡدُ وَقَوۡمُ لُوۡطٍ وَّاَصۡحٰبُ لۡـَٔيۡكَةِؕ اُولٰٓئِكَ الۡاَحۡزَابُ"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "اِنۡ كُلٌّ اِلَّا كَذَّبَ الرُّسُلَ فَحَقَّ عِقَابِࣖ‏"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "وَمَا يَنۡظُرُ هٰ٘ؤُلَآءِ اِلَّا صَيۡحَةً وَّاحِدَةً مَّا لَهَا مِنۡ فَوَاقٍ"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "وَقَالُوۡا رَبَّنَا عَجِّلۡ لَّنَا قِطَّنَا قَبۡلَ يَوۡمِ الۡحِسَابِ"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "اِصۡبِرۡ عَلٰي مَا يَقُوۡلُوۡنَ وَاذۡكُرۡ عَبۡدَنَا دَاوٗدَ ذَا الۡاَيۡدِۚ اِنَّهٗ٘ اَوَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "اِنَّا سَخَّرۡنَا الۡجِبَالَ مَعَهٗ يُسَبِّحۡنَ بِالۡعَشِيِّ وَالۡاِشۡرَاقِۙ‏"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "وَالطَّيۡرَ مَحۡشُوۡرَةًؕ كُلٌّ لَّهٗ٘ اَوَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "وَشَدَدۡنَا مُلۡكَهٗ وَاٰتَيۡنٰهُ الۡحِكۡمَةَ وَفَصۡلَ الۡخِطَابِ"
        }
    ]
}