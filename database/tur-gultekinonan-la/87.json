{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yuce ismini tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki O, yarattı, ´bir duzen icinde bicim verdi´"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir etti, boylece yol gosterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "´Yemyesil otlagı´ cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Ardından onu kuru, kara bir duruma soktu"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana okutacagız, sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ancak Tanrı´nın diledigi baska. Cunku O, acıkta olanı da bilir, saklı duranı da"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni kolay olan icin basarılı kılacagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Su halde, eger ´ogut ve hatırlatma´ bir yarar saglayacaksa, ´ogut verip hatırlat´"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Tanrı´dan ´ici titreyerek korkan´ ogut alır dusunur"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "´Mutsuz, bedbaht´ olan ondan kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en buyuk atese yollanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun icinde o ne olur ne yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu, temizlenip arınan felah bulmustur"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ve rabbinin ismini zikredip namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır siz, dunya hayatını secip ustun tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret ise daha hayırlı ve daha sureklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphesiz bu, onceki sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim´in ve Musa´nın sahifelerinde"
        }
    ]
}