{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok, yarılıp parcalandıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve ´kendi yaratılısına uygun´ rabbine boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer, duzlendigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icinde olanları dısa atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve ´kendi yaratılısına uygun´ rabbine boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, gercekten sen, hic durmaksızın rabbine dogru bir caba harcayıp durmaktasın; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Artık kimin kitabı sag yanından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesap (sorgu) ile sorguya cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve kendi ehline (yakınlarına) sevinc icinde donecektir (yenkalibu)"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı ardından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O da, helak (yok olmay)ı cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Cılgın alevli atese girecek"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, (dunyada) kendi ehli (yakınları) arasında sevincliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Dogrusu o, (rabbine) bir daha donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; gercekten rabbi, kendisini cok iyi gorendi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, safak vaktine yemin ederim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve toplayıp tasıdıgı seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ondordune girdigi zaman aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz, gercekten tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Su halde onlara ne oluyor ki inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kuran okundugunda secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine, o kufredenler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Tanrı, onların iclerinde sakladıklarını daha iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Bu durumda sen, onlara acı bir azab ile mujde ver"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak inanıp salih amellerde bulunanlar baska; onlar icin kesintisi olmayan bir ecir (mukafaat) vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burcları olan goge andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "O vadedilen gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sahid olana (gorene) ve sahit olunana (gorulene)"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahrolsun Ashab-ı Uhdud"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "´Tutusturucu yakıt dolu o ates´"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani kendileri (ates hendeginin) cevresinde oturmuslardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve inanclılara yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan, yalnızca ´ustun ve guclu olan´, ogulen Tanrı´ya inandıklarından dolayı intikam alıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Ki O (Tanrı), goklerin ve yerin mulku O´nundur. Tanrı, her seyin uzerinde sahid olandır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Gercek su ki, inanclı (erkek)lerle inanclı (kadın)lara iskence (fitne) uygulayanlar, sonra tevbe etmeyenler; iste onlar icin cehennem azabı vardır ve yakıcı azab onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Suphesiz inanıp salih amellerde bulunanlara gelince; onlar icin altından ırmaklar akan cennetler vardır. Iste buyuk ´kurtulus ve mutluluk´ budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Dogrusu, rabbinin ´zorlu yakalayısı´ siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Cunku O, ilkin var eden, (sonra dirilterek) dondurecek olandır"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, cok bagıslayandır cok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arsın sahibidir; Mecid (pek yuce)dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Her diledigini yapıp gerceklestirendir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud (ordularının)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Hayır, kufredenler (kesintisiz) bir yalanlama icindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Tanrı ise, onları arkalarından sarıp kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır; o (Kitap), ´serefli ustun´ olan bir Kurandır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Goge ve Tarık´a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık´ın ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(Karanlıgı) Delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Uzerinde gozetleyici koruyucu bulunmayan hicbir nefs (kimse) yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Insan bir baksın, hangi seyden yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Dokulup atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(Bu su,) Bel kemigi ile kaburgalar arasında(ki organlar)dan cıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Suphesiz (Tanrı), onu yeniden dondurmeye guc yetirendir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların orta yere cıkarılacagı gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun ne gucu vardır, ne yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Donuslu olan goge andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Yarılan yere de"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Suphesiz o (Kuran), ayırdeden bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Dogrusu onlar, hileli bir duzen planlayıp kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir duzen kurup hazırlıyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen kafirlere bir muhlet ver, az bir sure tanı"
        }
    ]
}