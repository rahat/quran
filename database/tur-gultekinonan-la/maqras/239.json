{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz, senin gogsunu yarıp genisletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve yukunu indirip atmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o, senin belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin zikrini (sanını) yuceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, gercekten zorlukla beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gercekten guclukle beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Su halde bos kaldıgın zaman, durmaksızın (dua ve ibadetle) yorulmaya devam et"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnızca rabbine ragbet et"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Incire ve zeytine andolsun"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina dagına"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve su guvenli (emin) beldeye (guvenilir sehre)"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Dogrusu, biz insanı en guzel bir bicimde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Sonra asagıların asagısına cevirdik"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Ancak inanıp salih amellerde bulunanlar baska; onlar icin kesintisi olmayan bir ecir vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Oyleyse bundan sonra, hangi sey sana dini yalanlatabilir"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Tanrı hukmedenlerin hakimi degil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan rabbin adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O insanı bir alaktan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, rabbin en buyuk kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Ki O, kalemle (yazmayı) ogretendir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini ogretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır gercekten insan, azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini mustagni gordugunden"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Suphesiz, donus yalnızca rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engellemekte olanı gordun mu"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kıldıgı zaman bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gordun mu? Ya o (kul) dogru yol uzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Ya da takvayı buyurduysa"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu? Ya (bu engellemek isteyen) yalanlıyor ve yuz ceviriyor ise"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O, Tanrı´nın gordugunu bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır; eger o, (bu tutumuna) bir son vermeyecek olursa, andolsun, onu perceminden tutup surukleyecegiz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı, gunahkar olan alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman da meclisini (yakın cevresini ve yandaslarını) cagırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri cagıracagız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır; ona boyun egme (rabbine) secde et ve yakınlas"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Gercek su ki, biz onu kadir gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kadir gecesinin ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kadir gecesi, bin aydan daha hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve ruh, onda rablerinin izniyle inerler; hepsi buyruktandır"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "Fecrin cıkısına kadar bir esenliktir (selamdır) o"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap ehlinden ve musriklerden kufredenler kendilerine apacık bir delil gelinceye kadar (bulundukları durumdan) kopup ayrılacak degillerdi"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "(O delil de) Tanrı´dan gonderilmis bir elci (ki) tertemiz sahifeleri okumaktadır"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "Onların icinde dosdogru ´yazılı hukumler´ vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Kitap ehlinden olanlar, ancak kendilerine apacık belgeler geldikten sonra fırkalara ayrıldılar"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Oysa onlara, dini yalnızca O´na halis kılan hanifler olarak sadece Tanrı´ya kulluk etmek, namazı dosdogru kılmak ve zekatı vermekten baskası buyrulmadı. Iste en dogru (dimdik ve sapasaglam) din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Suphesiz, kitap ehlinden ve musriklerden kufredenler icinde surekli kalıcılar olmak uzere cehennem atesindedirler. Iste onlar, yaratılmısların en kotuleridir"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "Inanıp salih amellerde bulunanlar ise; iste onlar da yaratılmısların en hayırlılarıdır"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Rableri katında onların odulleri, icinde ebedi kalıcılar olmak uzere altından ırmaklar akan Adn cennetleridir. Tanrı, onlardan razı olmustur, kendileri de O´ndan razı (hosnut, memnun) kalmıslardır. Iste bu, rabbinden ´ici titreyerek korku duyan kimse´ icindir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, o siddetli sarsıntısıyla sarsıldıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yer, agırlıklarını dısa atıp cıkardıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: \"Buna ne oluyor?\" dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "O gun (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku senin rabbin, ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, amelleri kendilerine gosterilsin diye, boluk boluk fırlayıp cıkarlar"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre agırlıgınca hayır islerse, onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Artık kim zerre agırlıgınca bir ser (kotuluk) islerse, onu gorur"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Soluk soluga kosan (at)lara andolsun"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Tırnaklarıyla) Ates sacanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Derken, orada tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Bununla bir (dusman) toplulugun orta yerine kadar dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Gercekten insan, rabbine karsı nankordur"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Ve gercekten, kendisi buna sahiddir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Muhakkak o, mal sevgisinden dolayı (bencil ve cimri tutumundan) cok katıdır"
        }
    ]
}