{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Yine de bilmeyecek mi? Kabirlerde olanların desilip dısa atıldıgı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Goguslerde olanların derlenip devsirildigi zamanı"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Suphesiz, o gun rableri, kendilerinden gercekten haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Kaaria"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir kaaria"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Sana o kaariayı bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Insanların, ´her yana dagılmıs´ pervaneler gibi olacakları gun"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Ve dagların ´etrafa sacılmıs´ renkli yunler gibi olacakları (gun)"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste, kimin tartıları agır basarsa"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Artık o, hosnut olunan bir hayat icindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif kalırsa"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Artık onun da anası (ummuhu) (barınagı, son duragı) ´haviye´dir (ucurum)"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne oldugunu (mahiyetini) sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir atestir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "(Mal, mulk ve servetle) Coklukla ovunmek, sizi ´tutkuyla oyalayıp, kendinizden gecirdi´"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Oyle ki (bu,) mezarı ziyaretinize (kabre gidisinize, olumunuze) kadar surdu"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır; ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır; eger siz kesin bir bilgiyle bilmis olsaydınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Andolsun, o cılgınca yanan atesi de elbette gorecektiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra onu, gercekten yakin gozuyle (Ayne´l Yakin) gormus olacaksınız"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gun, nimetten sorguya cekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asr´a andolsun"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Gercekten insan, ziyandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak inanıp salih amellerde bulunanlar, birbirlerine hakkı tavsiye edenler ve birbirlerine sabrı tavsiye edenler baska"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan cekistirip duran, kas goz hareketleriyle alay eden her kisinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Ki o, mal yıgıp biriktiren ve onu saydıkca sayandır"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Gercekten malının kendisini ebedi kılacagını sanıyor"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır; andolsun o, ´hutame´ye atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "´Hutame´nin ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Tanrı´nın tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Ki o, yureklerin (efide) ustune tırmanıp cıkar"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O, onların uzerine kilitlenecektir"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(Kendileri de) Dikilip yukseltilmis sutunlarda (baglanacaklardır)"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin fil sahiplerine neler yaptıgını gormedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların ´tasarladıkları planlarını´ bosa cıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların uzerine ebabil (suru suru) kuslarını gonderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara ´pisirilip sertlestirilmis balcık tasları´ atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Sonunda onları, yenik ekin yapragı gibi kıldı"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "(Hic degilse kendilerini) Kureys´i ´bir araya getirip anlastırdıgı´"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kıs yolculugunda onları (guvenlige kavusturdugu ya da baskalarıyla) ısındırıp yakınlastırdıgı icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Su Ev (Ka´be´n)in rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Ki O, kendilerini aclıktan (kurtarıp) doyuran ve korkudan guvenlige kavusturandır (amenehum)"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste yetimi itip kakan"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmayı tesvik etmeyen odur"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay o namaz kılanların haline ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ki onlar, namazlarında yanılgıdadırlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gosteris yapmaktadırlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve ´ufacık bir yardımı (veya zekatı) da´ engellemektedirler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Suphesiz, biz sana Kevser´i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Su halde rabbin icin namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Dogrusu, asıl ebter (soyu kesik) olan sana kin duyandır"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: \"Ey kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Benim taptıgıma siz tapacak degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben de sizin taptıklarınıza tapacak degilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Benim taptıgıma da siz tapmıyorsunuz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Tanrı´nın yardımı ve fetih geldigi zaman"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Ve insanların Tanrı´nın dinine dalga dalga girdiklerini gordugunde"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Hemen rabbini hamd ile tesbih et ve O´ndan magfiret dile. Cunku O, tevbeleri cok kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb´in iki eli kurusun; kurudu ya"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Malı ve kazandıkları kendisine bir yarar saglamadı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Alevi olan bir atese girecektir"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Esi de; odun hamalı (ve)"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynuna bukulmus bir ip (baglanmıs) olarak"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Tanrı, birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Tanrı, Sameddir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "O, dogurmamıstır ve dogurulmamıstır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Ve hicbir sey O´nun dengi degildir"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: Sabahın rabbine sıgınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlıgı coktugu zaman gecenin serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Dugumlere ufuren kadınların serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Ve hased ettigi zaman, hasetcinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: Insanların rabbine sıgınırım"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Insanların malikine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Insanların tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "´Sinsice kalplere vesvese ve suphe dusurup duran´ vesvesecinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Ki o, insanların goguslerine vesvese verir"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerekse insanlardan"
        }
    ]
}