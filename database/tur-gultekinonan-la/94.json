{
    "chapter": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz, senin gogsunu yarıp genisletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve yukunu indirip atmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki o, senin belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin zikrini (sanını) yuceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, gercekten zorlukla beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gercekten guclukle beraber kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Su halde bos kaldıgın zaman, durmaksızın (dua ve ibadetle) yorulmaya devam et"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnızca rabbine ragbet et"
        }
    ]
}