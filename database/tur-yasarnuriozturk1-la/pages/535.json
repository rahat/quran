{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "Gencecik usaklar dolanır cevrelerinde. Surekli hizmete adanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Surahiler, ibrikler ve oz kaynagından ickilerle doldurulmus kadehler esliginde"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne basları doner ondan ne de akılları karısır"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve meyveler, gonullerince sectiklerinden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Ve kus eti istahlarınca begendiklerinden"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve genc kadınlar, iri ve siyah gozlu"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Titizlikle korunan inciler misali"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Ne bos bir laf isitirler orada ne de gunaha sokacak bir sey"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece \"selam, selam!\" denir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ugur ve mutluluk yaranı. Nedir ugur ve mutluluk yaranı"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyve dizili muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzayan golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Akıp dokulen sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bircok meyveler arasındadırlar"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Ne tukenir ne yasaklanır"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yuksege yerlestirilmis dosekler icinde"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları da guzel bir bicimde yeniden yaratmıs"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Hepsini bakireler yapmısızdır"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Yasıt cilveli dilberler halinde"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ugur ve mutluluk yaranı icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir bolumu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir bolumu de sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Ve somluk ve ugursuzluk yaranı. Nedir somluk ve ugursuzluk yaranı"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Iliklere isleyen bir ates ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir golge altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serindir ne de comert"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku somluk yaranı, bundan once servet ve refahla sımaranlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "O buyuk gunah uzerinde ısrar edip dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve soyle derlerdi: \"Olunce mi, toprak ve kemik haline gelince mi, sahi o zaman mı yeniden diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Onceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Oncekiler de sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Bilinen bir gunun bulusma vakti/bulusma yerinde mutlaka biraraya getirileceklerdir"
        }
    ]
}