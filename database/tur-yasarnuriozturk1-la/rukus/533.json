{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Yemin olsun Gunes´e ve ısıgının parladıgı kusluk vaktine"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izlediginde Ay´a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu iyice actıgı vakit gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Ve onu sarıp sarmaladıgı zaman geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu kurana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu duzgun bir bicimde sekillendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Ardından da ona bozuklugunu ve takvasını ilham edene ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Benligi temizleyip arındıran, gercekten kurtulmustur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip ortense kayba ugramıstır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi, azgınlıgı yuzunden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En haydutları ortaya fırladıgı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın elcisi onlara soyle demisti: \"Allah´ın devesini ve onun su icme hakkını koruyun"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat elciye inanmadılar da deveyi devirip bogazladılar. Bunun uzerine, Rableri onların gunahlarını kendi baslarına gecirdi de o yurdu dumduz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Allah, isin sonundan korkacak degil ya"
        }
    ]
}