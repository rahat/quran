{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Hangi seyden sorup duruyorlar birbirlerine"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O buyuk haberden mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onda tartısma icindedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, sandıkları gibi degil! Yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Hayır, hayır! Dusundukleri gibi degil, yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz bu yeryuzunu bir besik yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları birer kazık yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizleri ciftler olarak yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Sizin uykunuzu bir dinlenme/bir rahatlama/bir tur olum yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir giysi yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu, gecim icin calısma zamanı yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuzde yedi saglam/asınmaz kurduk"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Bir de parıl parıl parlayan kandil yerlestirdik"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkarak su cıkaranlardan sarıl sarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ki cıkaralım onlardan daneler ve otlar"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve icice girmis baglar/bahceler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Hic kuskusuz, o ayırma ve hukum gunu kesin olarak belirlenmistir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sura ufuruldugu gun, bolukler halinde geleceksiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gok acılmıs, kapı kapı oluvermistir"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulmus, bir serap oluvermistir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem, bir gozetleme yeri olmustur"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlar icin bir barınak"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Devirlerce kalacaklardır icinde"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Ne bir serinlik tadacaklar ne de bir icecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Sadece kaynar su, atık su"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Cok uygun bir karsılık olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Dogrusu onlar boyle bir hesap ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi pervasızca yalanlamıslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Oysaki biz, her seyi iyiden iyiye sayıp kitaplastırmıstık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Hadi, tadıverin! Size azaptan baska bir sey asla artırmayacagız"
        }
    ]
}