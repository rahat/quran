{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "O Kaaria, o siddetli ses cıkararak carpan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir Kaaria"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Kaaria´nın ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar, cırpınarak yayılmıs pervaneler gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar, didilmis renkli yun gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Iste o gun, tartıları agır basan kisi"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Evet o kisi, hosnutluk verici bir yasayıs icindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Tartıları hafif cekeninse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Anası, Haviye´dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne oldugunu sana bildiren nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızısmıs bir atestir o"
        }
    ]
}