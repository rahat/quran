{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "O beklenen muthis olay oldugunda"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Yoktur onun olusunu yalanlayacak"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Kimini alcaltır, kimini yukseltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yerkure bir sarsılısla sarsıldıgında"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar bir serpilisle serpildiginde"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Hepsi un ufak olup dagılmıstır"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler, uc cift/sınıf oluvermissinizdir"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Iste ugur ve mutluluk yaranı. Nedir ugur ve mutluluk yaranı"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Iste somluk ve bunalım yaranı. Nedir somluk ve bunalım yaranı"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve olusta onde gidenler, yarısta onde gidenler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlardır yaklastırılanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimetlerle dolu bahcelerdedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Buyuk kısmı oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Az bir kısmı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Suslu, nakıslı tahtlar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onlar ustunde karsılıklı yan gelip yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Gencecik usaklar dolanır cevrelerinde. Surekli hizmete adanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Surahiler, ibrikler ve oz kaynagından ickilerle doldurulmus kadehler esliginde"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne basları doner ondan ne de akılları karısır"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve meyveler, gonullerince sectiklerinden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Ve kus eti istahlarınca begendiklerinden"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve genc kadınlar, iri ve siyah gozlu"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Titizlikle korunan inciler misali"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Ne bos bir laf isitirler orada ne de gunaha sokacak bir sey"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece \"selam, selam!\" denir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ugur ve mutluluk yaranı. Nedir ugur ve mutluluk yaranı"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyve dizili muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzayan golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Akıp dokulen sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bircok meyveler arasındadırlar"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Ne tukenir ne yasaklanır"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yuksege yerlestirilmis dosekler icinde"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları da guzel bir bicimde yeniden yaratmıs"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Hepsini bakireler yapmısızdır"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Yasıt cilveli dilberler halinde"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ugur ve mutluluk yaranı icin"
        }
    ]
}