{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kdyz nebesa se ROZPOLTI"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "a hvezdy budou rozpraseny"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "a more splynou do sebe"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "a hroby zdola navrch budou prevraceny"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(tehdy) zvi duse, co byla ucinila, i co byla zameskala"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O clovece! co zmamilo te ohledne Pana tveho vzacneho"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "jenz stvoril te a vyrovnal a spravnou (podobu) ti dal"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "v jakekoliv pak podobe chtel, te sestavil"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Nikoliv! naopak, vylhanym nazyvaji soud (posledni)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Vsak zajiste nad vami strazci stoji"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "vzacni, (vse) pisici"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "co konate (dobre) vedi"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Ctnostni v rozkosnem budou (bydleni)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "zavili pak v pekla plameni"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "peci budou se v den soudu (posledni)"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "z nej nebudou se moci vzdaliti"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Kdo povi ti, co jest den soudu (posledni)"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "A znovu: kdo povi ti, co jest den soudu (posledni)"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Den, kdy, nebude duse moci uciniti pro jinou dusi praniceho: rozhodnuti v den ten patriti bude Bohu"
        }
    ]
}