{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Pri poradem POSLANYCH"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "a spechem spejicich"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "a hodem rozhazujicich, a predelem rozlisujicich"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "a napomenuti vrhajicich"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "omluv ci vystrahy"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(prisam:) zajiste to, co slibovano jest vam, jiste uda se"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Kdyz pak hvezdy budou zhasnuty"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "a nebesa budou rozpoltena"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "a kdyz hory budou rozpraseny"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "a cas jisty urcen pude prorokum â€”"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "ke kteremu dni (urcena) bude lhuta"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Ke dni to rozhodnuti"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "A kdo povi ti, co den jest rozhodnuti"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Coz nezahladili jsme predesle"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "pak (jinym) dali po nich nasledovati"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Taktez ucinime i s provinilymi"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Coz nestvorili jsme vas z vody prabidne"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "jiz vlozili jsme v misto bezpecne"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "az k dobe predem urcene"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "A mohli jsme to"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Jak mocni jsme"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Coz neucinili jsme zemi schranou jen"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "zivym i mrtvym"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "A na ni ucinili jsme hor temena vysoka, a pitim vodu cerstvou dali vam"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Tahnete k tomu, co lzi jste nazvali"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Tahnete k stinu trosloupovemu"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "jenz nestini, aniz chrani proti plamenum"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "jiskry meta, jak hrady velike"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "podobne velbloudum zlutavym"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Toto jest den, kdy ani nehlesnou"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "aniz dovoleno bude jim, by omlouvali se"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Totot den rozhodnuti jest: shromazdili jsme vas i predesle"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "mate-li pak lest nejakou, nuz kujte ji proti mne"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Beda v den onen tem, kdoz zvou to lzi"
        }
    ]
}