{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Netreba prisahati mi pri ZMRTVYCHVSTANI"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "aniz prisahati pri dusi vycitky si cinici"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "zdaz domniva se clovek, ze neshromazdime kosti jeho"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Ano; my s to jsme presne sestaviti i spicky prstu jeho"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Vsak clovek zapirati chce to, co pred sebou ma"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "taze se: „Kdy prijde ten den zmrtvychvstani?“"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Vsak kdyz oslepen bude zrak"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "a mesic zatmi se"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "a spojeno bude slunce s mesicem"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "tehdy rekne clovek: „Kde utulek nalezti dnes?“"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Nikoliv, nebude utulku"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "u Pana tveho v den ten stale bude stanoviste"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "Zpraven bude v den onen clovek o tom, co poslal ku predu i o tom, co zadrzel"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "ano, clovek bude sam sobe (svedkem) ocitym"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "a i kdyby omluvy sve prednesl —"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "„Nehybej prilis jazykem svym v nem, abys uspisil jej"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Nam zajiste prislusi sebrani a cteni jeho"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "a kdyz cteme ti jej, nasleduj cteni jeho"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Pak tez zajiste pripadne nam vysvetleni jeho.“ —"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Nikoliv! Ale vy milujete zivot rychle mijici"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "a (stranou) nechavate zivot budouci"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "V den ten tvare budou zarici"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "a k Panu svemu hledici"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "a budou tez tvare se temnici"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "ze stane se s nimi cos strasneho, mnici"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Nikoli; kdyz (duse) dostoupi hltanu"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "a bude receno: „Kdo kouzlo ma?“"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "a mysli (clovek), ze jest mu louciti se"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "a noha s nohou splete se"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "v den ten k Panu svemu bude hnan"
        }
    ]
}