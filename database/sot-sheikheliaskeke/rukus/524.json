{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Mohla leholimo le petsohang ka lehare"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Linaleli li hasanang"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Maoatle a tlolang meeli"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Mabitla a nyebekoloha"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Phefomoloho ka ng`oe e tla tseba seo e se rometseng nale le seo e se patileng"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Oho motho! Ke eng se o hohetseng ho tloha ho Mong`a hau Ea nala e Khaphatsehang"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Ea U hlolileng, a U neha sebopeo A o fa lineo ka tekanyo"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Ka tsela e mokhahlang, A u bopa"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Empa o latola tokelo le kahlolo"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Ruri! Ho tengba lebeli holim’a lona"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Ba mosa ba hlomphehang,-ba ngolang"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ba tseba tsohle tseo le li etsang"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Haele bohle ba lokileng, ba tla ba nyakallong"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Baetsalibe, – Ba tla ba kahar’a Mollo"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Oo ba tla kena mohla Letsatsi la Kahlolo"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ba ke ke ba o qoba"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ke`ng se tla u hlalosetsa hore na Letsatsi la Kahlolo ke eng"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Hape, ke`ng se tla u hlalosetsa hore na Letsatsi la Kahlolo ke eng"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ke letsatsi leo ka lona ho seng phefomoloho e tlang hoba le matla a ho thusa e ng`oe. Taelo letsatsing leo ke ea Allah"
        }
    ]
}