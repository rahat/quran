{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "gajang wie gyesineun junim-ui ileum-eul chanmihala"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "geubun-eun ingan-eul changjohasa gajang-aleumdaun hyeongsang-eulo jieusyeoss-eumyeo"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "modeun geos-e teugjing-eul dusa geugeos eulo yuyongke hayeoss-eumyeo"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "geubun-eun mogcholeul saengseongke hasigo"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "geugeos-eul galsaeg-ui maleun pullo ha sidoda"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "hananim-i geudaeege malsseum-eul gyesihani amgihayeo ij-ji malla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "geuleona hananim-i wonhaneun geos-eunje-oela sillo geubun-eun issneun geosgwa sumgyeojin modeun geos-eul algo gyesinila"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "hananim-eun geugeos-i geudaeege swibdolog hayeo jueoss-euni"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "geu gyohun-eul jeondalhayeo deudneun ja deul-ege yuighadolog hala"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "hananim-eul dulyeowo haneun jadeul eun geu gyohun-eul bad-adeul-il geos-imyeo"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "bulhaenghan bulsinjadeul-eun geugeos-eul hoepihani"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "keun buljiog-eulo deul-eoga"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "geugos-eseo jugjido anihago saljido moshalila"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "geuleona seuseuloleul cheong-gyeolke han ja beonseonghalini"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "junim-ui ileum-eul chanmihago gi dohala"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "geulaedo neohuiga hyeonse-ui salm-eul joh-ahana"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "naesega deo joh-eumyeo yeong-wonhani la"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "sillo igeos-eun yes seongseoedo gye sidoeeo iss-eumyeo"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "abeulahamgwa mose-ui seongseoedogeuleohanila"
        }
    ]
}