{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "By die hemele en by die Aandster"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Wat sal u laat verstaan wat die Aandster is"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Dit is ’n skitterende ster"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "En daar is geen siel waaroor daar nie ’n waker is nie"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Laat die mens dus besef waarvan hy geskape is"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Hy word geskep uit stortende water"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "wat uit die ribbes en die ruggraat kom"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Waarlik, Hy is by magte om die mens weer op te wek"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Op die Dag wanneer die geheime openbaar sal word"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "dan sal hy geen krag of helper hê nie"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "By die wolk wat reën gee"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "en by die aarde wat plante laat voortspruit"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "voorwaar, dit is ’n Beslissende Woord"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "en ook geen ydele Woord nie"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Voorwaar, húlle beraam ’n plan"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "en Ek beraam ’n plan"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Skenk die ongelowiges dus uitstel ~ laat hulle alleen vir ’n tyd en wyl"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Verheerlik die Naam van u Heer, die Allerhoogste"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "wat skep, en dan vervolmaak"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "en wat bepaal, en dan lei"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "wat die plante laat uitspruit"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "en dit dan tot stof verdor"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ons sal u dit1 laat voordra, sodat u dit nooit sal vergeet nie"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "behalwe wat Allah wil ~ waarlik, Hy weet wat in die geheim en in die openbaar plaasvind"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ons sal u weg voorspoedig maak"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Vermaan dan, want vermaning is goed"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Hy wat vrees, sal oplettend wees"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Maar die rampsalige wat dit vermy"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "sal in die Vuur brand"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Daarin sal hy nie kan lewe en ook nie sterwe nie"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Voorspoedig is hy wat homself reinig"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "en die Naam van die Heer op sy lippe neem en bid"
        }
    ]
}