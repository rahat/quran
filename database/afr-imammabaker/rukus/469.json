{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Wanneer die Gebeurtenis plaasvind"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "sal dit nie ontken kan word nie"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Dit sal sommige verneder en andere verhef"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Wanneer die aarde met ’n hewige skok sal skud"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "en die berge sal verbrokkel"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "dan sal hulle soos verstrooide stof wees"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "en julle sal in drie groepe verdeel word"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Die mense aan die regterkant ~ hoe gelukkig is die mense aan die regterkant"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "en die mense aan die linkerkant ~ hoe ongelukkig is die mense aan die linkerkant"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "en die vooruitstrewendes in die geloof sal die vooruitstrewendes bly"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "hulle sal nader aan Allah getrek word"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "In Tuine van verrukking"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "’n Menigte van die eerstes"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "en maar min uit die later tye"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "op deurvlegte sofa’s"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "neergevly daarop, met die gesigte na mekaar gewend"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Jong manne wat nie sal verouder nie, sal onder hulle rondgaan"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "met drinkbekers, lampetkanne, en glase met wyn"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "wat hulle nie hoofpyn sal gee of dronk sal laat word nie"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "en vrugte, net wat hulle verkies"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "en pluimveevleis waarna hulle verlang"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "en suiwer, rein metgeselle"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "soos verborge pêrels"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "’n Beloning vir wat hulle gedoen het"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Hulle hoor geen ydele gesprek of sondige taal daarin nie"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "maar net dié woorde: Vrede! Vrede"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "En die mense aan die regterkant; hoe gelukkig is die mense aan die regterkant"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Te midde van doringlose lotusbome"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "en piesangbome vol trosse"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "met vérrykende skadu’s"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "en vloeiende water"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "en volop vrugte"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "nóg afgesny, nóg verbode"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "en verhewe sofa’s"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Voorwaar, Ons het vir hulle ’n nuwe skepping geskape"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "en tot maagde het Ons hulle gemaak"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "beminlik, en van gelyke ouderdom"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "vir diegene aan die regterkant"
        }
    ]
}