{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "By hulle wat skreeuend storm"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "En hulle wat vuurvonke uitslaan"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "En teen dagbreek plotseling ’n aanval doen"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "en so ’n stofspoor laat"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "en deur die vyandige menigtes breek"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Voorwaar, die mens is ondankbaar teenoor sy Heer"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "En waarlik, hy self is getuie daarvan"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "en weens sy liefde vir rykdom is hy suinig"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Weet hy dan nie dat wat in die grafte is, opgewek sal word nie"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "en dat wat in die harte is, bekend gemaak sal word nie"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Hulle Heer sal aangaande hulle op hierdie Dag goed ingelig wees"
        }
    ]
}