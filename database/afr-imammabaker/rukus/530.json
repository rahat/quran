{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Het nuus van die Oorweldigende Gebeurtenis u bereik"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Op dié Dag sal sommige gesigte neergeslaan wees"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "verslae, afgemat"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "verskroei deur ’n Brandende Vuur"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "terwyl hulle sal drink uit ’n kokende fontein"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Hulle sal geen voedsel kry nie, behalwe giftige dorings"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "en dit sal nie voedsaam wees, en hulle teen die honger ook niks baat nie"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Ander gesigte sal op dié Dag bly wees"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "weltevrede met hul strewe"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "in ’n verhewe Tuin"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "waarin u geen ydele gesprek sal hoor nie"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "In hierdie Tuin is ’n borrelende fontein"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "en hoë rusbanke"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "en drinkbekers"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "en gerangskikte kussings"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "en oopgespreide tapyte"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Kyk hulle nie na die wolke, hoe hulle gevorm word nie"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "En na die hemel, hoe verhewe dit is nie"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "En na die berge, hoe hulle gevestig is nie"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "En na die aarde en sy uitgestrektheid nie"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Vermaan dan, want u is slegs ’n waarskuwer"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "U is geen bewaarder oor hulle nie"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Maar wie ook al wegdraai en weier om te glo"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah sal hulle met die strengste kastyding straf"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Voorwaar, hulle terugkeer is na Ons"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "dan kom dit Ons toe om hulle te vergeld"
        }
    ]
}