{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Hy1 het gefrons en weggedraai"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "omdat die blinde man na hom gekom het"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "En wat sal u laat besef dat hy dit gedoen het, sodat hy homself kan reinig"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "of dat hy aandagtig kan word, sodat die Vermaning hom kan baat"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Maar aan hom wat homself sonder sorge ag"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "aan hom skenk u u aandag"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "U is sonder blaam as hy hom nie wil laat louter nie"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Maar met hom wat hardstrewend na u kom"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "en Allah vrees"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "met hom is u onverskillig"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Nee, dit is waarlik ’n Vermaning"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Laat hom dan wat wil, dit in ag neem"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Dit is in eerbare geskrifte"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "verhewe, gereinig"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "in die hande van skrywers"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "edel, deugsaam"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Wee die mens! Hoe ondankbaar is hy"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Van wat het Hy hom geskape"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Uit ’n nietige sperm. Hy skep hom en stel sy verhoudinge vas"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "dan maak Hy sy weg vir hom gelyk"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "en gee ook dat hy moet sterf, en wys vir hom ’n graf aan"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Daarna, wanneer Hy wil, sal Hy hom weer opwek"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Nee, maar hy doen nie wat Hy hom gebied nie"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Laat die mens dan sy voedsel beskou"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "hoe Ons die water in oorvloed laat neerstort"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "dan die aarde laat oopskeur"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "en daarna die graan daaruit laat groei"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "ook druiwe en groente"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "en die olyfboom en die dadelpalm"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "en digbeplante tuine"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "en vrugte en weigras"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "’n voorsiening vir julle en julle vee"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Maar as die oorverdowende geskreeu kom"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "die Dag waarop ’n man van sy broer sal vlug"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "en van sy moeder en sy vader"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "en van sy vrou en sy kinders"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "op dié Dag sal elke man ’n aangeleentheid hê wat hom alleen sal besig hou"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Op dié Dag sal sommige gesigte stralend wees"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "laggend, vrolik"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "En op dié Dag sal daar op sommige gesigte stof lê"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "duisternis sal hulle bedek"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Hulle is die ongelowiges, die goddeloses. Wanneer Die Son Opgevou Sal Word"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Wanneer die son opgevou"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "en die sterre dof sal word"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "wanneer die berge sal verdwyn"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "en wanneer die dragtige kamele ver nalaat sal wees"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "en die wilde diere versamel sal word"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "en wanneer die riviere leeg sal loop"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "en al die mense verenig sal word"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "en wanneer die kind wat lewend begrawe is, sal vra"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "vir watter misdaad sy doodgemaak is"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "en wanneer die geskrifte versprei"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "en wanneer die hemel blootgelê word"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "en wanneer die Hel aangesteek"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "en die Paradys nader gebring sal word"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "dan sal elke siel weet wat dit voorberei het"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Ek roep tot getuie die planete wat terugwyk"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "hulle koers volg en ondergaan"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "en die nag wanneer dit heengaan"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "en die daeraad wanneer dit aanbreek"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "dit is sekerlik die woord van ’n edele Boodskapper"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "die besitter van mag, en bevestig in die aanwesigheid van die Heer van die Troon"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "een aan wie gehoorsaamheid toekom, die getroue"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "en julle metgesel is nie kranksinnig nie"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "En waarlik, hy het hom self op die uithoeke van die wêreld gesien"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "En hy is nie suinig met kennis aangaande die Onsigbare nie"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Ook is dit nie die woord van ’n vervloekte duiwel nie"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Waarheen gaan julle dan"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Dit is niks anders nie as ’n Vermaning vir die nasies"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "vir hom onder julle wat opreg wil wandel"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "En julle sal nie wil nie, behalwe hulle vir wie Allah dit beskik; die Heer van die Wêrelde"
        }
    ]
}