{
    "chapter": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Wee elke lasteraar, kwaadspreker"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "wat rykdom vergaar en dit telke male oor en oor tel"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "en meen dat sy rykdom hom vir ewig sal baat"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Nee, hy sal in die malende meul gewerp word"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "En wat sal u laat verstaan wat die malende meul is"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Dit is die Vuur wat Allah aangesteek het"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "en waarvan die brandstof harte is"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Voorwaar, dit omsluit hulle"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "in uitgestrekte kolomme"
        }
    ]
}