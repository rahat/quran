{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "(שבועה) בלילה המסתיר"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "וביום בזוהרו באורו"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "וביוצר הזכר והנקבה"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "אכן, מעשיכם נבדלים"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "אולם, המוסר והירא"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "ומאמין בגמול"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "נדריך אותו לשביל מעשי החסד"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "אך, הקמצן המסופק"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "ומתכחש לגמול"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "נדריך אותו לשביל הרשע"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "ומה יועיל לו ממונו כשימות"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "אכן, אנו רק מדריכים"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "אכן, לנו העולם הבא והעולם הזה"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "אני מזהיר אתכם מאש בוערת"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "שבה לא יישרף זולת המרושע"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "אשר התכחש וסטה"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "אך, הירא מאללה יוסט ממנה (מהאש)"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "אשר תורם ממונו להיטהר"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "לא כהחזר למישהו על טובה שהוא עשה"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "אלא, אך ורק, למען ריבונו הנעלה"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "(ובאחריתו) יהיה מתרצה (מגמולו)"
        }
    ]
}