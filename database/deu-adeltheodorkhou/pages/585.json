{
    "pages": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Er runzelte die Stirn und kehrte sich ab"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Weil der Blinde zu ihm kam"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Woher sollst du es wissen, vielleicht will er sich läutern"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Oder bedenken, so daß ihm die Ermahnung nützt"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Wer sich verhält, als wäre er auf niemanden angewiesen"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Dem widmest du dich"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Und es kümmert dich nicht, daß er sich nicht läutern will"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Wer aber zu dir eilig kommt"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Und dabei gottesfürchtig ist"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Dem schenkst du keine Aufmerksamkeit"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Nein, es ist eine Erinnerung"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Wer nun will, gedenkt seiner"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(Er steht) auf Blättern, die in Ehren gehalten werden"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Emporgehoben und rein gehalten"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "In den Händen von Schreibern"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Die edel und fromm sind"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Dem Tod geweiht sei der Mensch, wie undankbar ist er"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Aus was für einem Stoff hat Er ihn erschaffen"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Aus einem Tropfen hat Er ihn erschaffen und ihm sein Maß gesetzt"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Dann macht Er ihm seinen Weg leicht"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Dann läßt Er ihn sterben und bringt ihn ins Grab"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Dann, wenn Er will, erweckt Er ihn auf"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Nein, er hat noch nicht ausgeführt, was Er ihm befohlen hat"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Der Mensch soll auf seine Nahrung schauen"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Wir gießen doch Wasser in Strömen"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Dann spalten Wir die Erde auf"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Und lassen auf ihr Korn wachsen"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Und Weinstöcke und Gemüse"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Und Ölbäume und Palmen"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Und Gärten mit großen dicken Bäumen"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Und Früchten und Gras"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Als Nutznießung für euch und euer Vieh"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Wenn die ohrenbetäubende (Stunde) kommt"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Am Tag, da einer flieht vor seinem Bruder"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Und seiner Mutter und seinem Vater"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Und seiner Gefährtin und seinen Söhnen"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "An jenem Tag hat jeder von ihnen eine Angelegenheit, die ihn voll beansprucht"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "An jenem Tag wird es strahlende Gesichter geben"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Die lachen und sich freuen"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Und es wird an jenem Tag Gesichter geben, auf denen Staub liegt"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Und die von Ruß bedeckt sind"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Das sind die, die ungläubig und voller Laster sind"
        }
    ]
}