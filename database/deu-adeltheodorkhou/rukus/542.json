{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "Bei denen, die schnaubend laufen"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "Und die Funken stieben lassen"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Und die am Morgen stürmen"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Und damit Staub aufwirbeln"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Und dadurch in die Mitte (der Feinde) eindringen"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Wahrlich, der Mensch ist seinem Herrn gegenüber undankbar"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Und er ist selbst darüber Zeuge"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Und er ist heftig in seiner Liebe zu den (irdischen) Gütern"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Weiß er es denn nicht? Wenn das, was in den Gräbern ist, aufgewühlt wird"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Und das, was im Inneren (der Menschen) ist, im Ergebnis erfaßt wird"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "An jenem Tag hat ihr Herr Kenntnis von ihnen (allen)"
        }
    ]
}