{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Olacak vak'a oldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun olusunu yalanlayacak kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alçalticidir, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetle sarsildigi"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar serpildikçe serpildigi"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagilip toz duman haline geldigi"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler üç sinif oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagin adamlari (var ya) ne mutludurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solun adamlari ise ne ugursuzdurlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Önde olanlar (var ya), onlar öncüdürler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste o yaklastirilanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerindedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Çogu önceki ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazi da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Onlar) cevherlerle islenmis tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsilikli olarak onlarin üzerinde yaslanirlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Çevrelerinde, ölümsüzlüge ulasmis gençler dolasirlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagindan doldurulmus, testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan ne baslari agritilir, ne de akillari giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyvalar"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarinin çektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Iri gözlü hûriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sakli inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptiklarina karsilik olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos bir söz ve günaha sokan bir laf isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Duyduklari söz, yalniz \"selam\", \"selam\" dir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagin adamlari, nedir o sagin adamlari"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dalbasti kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva dizili muzlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamis gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fiskiran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Pek çok meyva arasinda"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yükseltilmis dösekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadinlari yeniden insa ettik (yarattik)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onlari bâkireler yaptik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Hep yasit sevgililer"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sagin adamlari içindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çogu öncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir çogu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solun adamlari, nedir o solcular"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Içlerine isleyen bir ates ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kapkara dumandan bir gölge altindadirlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ki ne serindir, ne de faydali"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar bundan önce varlik içinde sefâhete dalmislardi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahi islemekte israr ediyorlardi"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardi ki: \"Biz ölüp, toprak ve kemik yigini olduktan sonra, biz mi bir daha diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarimizda mi"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Öncekiler ve sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün belli vaktinde mutlaka toplanacaklardir"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapik yalanlayicilar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir agaçtan, zakkum agacindan yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karinlarinizi hep onunla dolduracaksiniz"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne de kaynar su içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susuzluk illetine tutulmus develerin içisi gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Iste ceza gününde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Biz sizi yarattik; tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attiginiz meniyi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratiyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranizda ölümü takdir eden biziz ve bizim önümüze geçilmez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediginiz bir yaratilista tekrar var edelim diye (böyle yapiyoruz)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratilisi bildiniz. Düsünüp ibret almaniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginizi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik, onu kuru bir çöp yapardik. Hayret eder dururdunuz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Dogrusu borç altina girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Dogrusu, biz yoksul birakildik\" (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Içtiginiz suya baktiniz mi"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardik. O halde sükretseniz ya"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Bir de o çaktiginiz atesi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacini siz mi yarattiniz, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve çölden gelip geçenlere bir fayda yaptik"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse büyük Rabbinin adini yücelt"
        }
    ]
}