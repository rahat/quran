{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarildigi"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatilip düzlendigi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Içinde ne varsa attigi ve tamamen bosaldigi"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbini dinleyip kendisine yarasir sekilde boyun egdigi vakit"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Kuskusuz sen Rabbine dogru çaba üstüne çaba sarfetmektesin, nihayet O'na varacaksin"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O vakit kitabi sag eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabi arkasindan verilen"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Yetis ey ölüm!\" diye bagiracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o ailesi içinde sevinçli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Hiç Rabbine dönmeyecegini sanmisti"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayir Rabbi onu görmekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Simdi, yemin ederim o safaga"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve içinde barindirdigi seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Derlendigi zaman o aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar neden acaba iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karsilarinda Kur'ân okundugu vakit secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine o nankörler yalanliyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah içlerinde sakladiklarini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara elem verici bir azabi müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi ameller isleyenler baskadir. Onlara tükenmez bir ecir vardir"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlar sahibi gökyüzüne"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Vaad olunan o güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sahitlik edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendegin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O çirali atesin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani o atesin basina oturmuslar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yaptiklarini seyrediyorlardi"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Müminlere kizmalarinin sebebi de, onlarin yalniz çok güçlü ve övgüye lâyik olan Allah'a iman etmeleri idi"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, göklerin ve yerin hükümranligi O'nundur ve Allah her seye sahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Inanan erkek ve kadinlara iskence yapip sonra da tevbe etmeyenlere cehennem azabi ve yangin azabi vardir"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Inanan ve iyi amel yapanlar için de altindan irmaklar akan cennetler vardir. Iste büyük kurtulus odur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Kuskusuz Rabbinin yakalamasi serttir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Yoktan o yaratir ve tekrar o diriltir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bununla beraber çok bagislayandir, çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars'in sahibidir, yücedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Diledigini yapandir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O ordularin kissasi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud'un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Fakat o inkarcilar hâlâ bir yalanlama içinde"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Oysa Allah onlari arkalarindan kusatmistir"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayir o serefli bir Kur'ân'dir"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz'dadir"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o göge ve Târik'a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Târik nedir, bildin mi"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, karanligi delen yildizdir"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir nefis yoktur ki basinda bir denetleyici bulunmasin"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun için insan neden yaratildigina bir baksin"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atilan bir sudan yaratildi"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "O su, erkegin sulbü ile kadinin gögüs kemikleri arasindan çikar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette Allah'in onu döndürmeye gücü yeter"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gün bütün sirlar yoklanip, meydana çikarilir"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Insanin o gün ne bir gücü vardir, ne de bir yardimcisi"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüslü göge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "O yarilip çatlayan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kuskusuz Kur'ân, ayirici bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla bir saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, kâfirler hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine karsilik veririm"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için sen kâfirlere mühlet ver, onlara az bir zaman tani"
        }
    ]
}