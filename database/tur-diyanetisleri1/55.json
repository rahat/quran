{
    "chapter": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahmân (çok merhametli olan Allah)"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kurân'i ögretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insani yaratti"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyani ögretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Günes de ay da bir hesab iledir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Bitkiler ve agaçlar secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Gögü yükseltti ve mizani koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Sakin tartida taskinlik etmeyin"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartiyi adaletle yapin, terazide eksiklik yapmayin"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "(Allah) yeri mahlukat için (asagiya) koydu"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyvalar ve salkimli hurma agaçlari vardir"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Yaprakli taneler ve hos kokulu bitkiler vardir"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Allah insani, pismis bir çamura benzeyen bir balçiktan yaratti"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de hâlis atesten yaratti"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "iki dogunun ve iki batinin Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "(Aci ve tatli) iki denizi saliverdi birbirine kavusuyorlar"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Fakat aralarinda bir engel vardir, birbirlerine geçip karismiyorlar"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "Ikisinden de inci ve mercan çikar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizde koca daglar gibi yükselen gemiler de onundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 26,
            "text": "Yer üzerinde bulunan her sey fânidir"
        },
        {
            "chapter": 55,
            "verse": 27,
            "text": "Yalniz celâl ve ikram sahibi Rabbinin yüzü (zâti) baki kalacaktir"
        },
        {
            "chapter": 55,
            "verse": 28,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 29,
            "text": "Göklerde ve yerde bulunanlar, O'ndan isterler. O, her gün yeni bir istedir"
        },
        {
            "chapter": 55,
            "verse": 30,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 31,
            "text": "Ey insan ve cin! sizin de hesabinizi ele alacagiz"
        },
        {
            "chapter": 55,
            "verse": 32,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 33,
            "text": "Ey cin ve insan topluluklari! Göklerin ve yerin çevresinden geçmeye gücünüz yeterse geçin gidin. Allah'in verdigi bir güç olmadan geçemezsiniz"
        },
        {
            "chapter": 55,
            "verse": 34,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 35,
            "text": "Üzerinize atesten alev ve duman gönderilir, kendinizi savunamazsiniz"
        },
        {
            "chapter": 55,
            "verse": 36,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 37,
            "text": "Gök yarilip da, erimis yag gibi kipkirmizi bir gül oldugu zaman"
        },
        {
            "chapter": 55,
            "verse": 38,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 39,
            "text": "Iste o gün, ne insana ne de cinne günahindan sorulmaz"
        },
        {
            "chapter": 55,
            "verse": 40,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 41,
            "text": "Suçlular simalarindan taninir, alinlarindan ve ayaklarindan tutulur"
        },
        {
            "chapter": 55,
            "verse": 42,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 43,
            "text": "Iste bu, suçlularin yalanladigi cehennemdir"
        },
        {
            "chapter": 55,
            "verse": 44,
            "text": "Onunla kaynar su arasinda dolasirlar"
        },
        {
            "chapter": 55,
            "verse": 45,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 46,
            "text": "Rabbinin makamindan korkan kimselere iki cennet vardir"
        },
        {
            "chapter": 55,
            "verse": 47,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 48,
            "text": "Ikisinin de çesitli agaçlari, meyvalari vardir"
        },
        {
            "chapter": 55,
            "verse": 49,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 50,
            "text": "Ikisinde de akip giden iki kaynak vardir"
        },
        {
            "chapter": 55,
            "verse": 51,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 52,
            "text": "Ikisinde de her türlü meyvadan çift çift vardir"
        },
        {
            "chapter": 55,
            "verse": 53,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 54,
            "text": "Astarlari atlastan yataklara yaslanirlar. Iki cennetin de devsirmesi yakindir"
        },
        {
            "chapter": 55,
            "verse": 55,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 56,
            "text": "Oralarda gözlerini yalniz eslerine çevirmis dilberler var ki, bunlardan önce onlara ne insan ne de cin dokunmustur"
        },
        {
            "chapter": 55,
            "verse": 57,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 58,
            "text": "Sanki onlar yâkut ve mercandirlar"
        },
        {
            "chapter": 55,
            "verse": 59,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 60,
            "text": "Iyiligin karsiligi, yalniz iyilik degil midir"
        },
        {
            "chapter": 55,
            "verse": 61,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 62,
            "text": "Bu ikisinden baska iki cennet daha vardir"
        },
        {
            "chapter": 55,
            "verse": 63,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 64,
            "text": "(Bu cennetler) yemyesildirler"
        },
        {
            "chapter": 55,
            "verse": 65,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 66,
            "text": "Ikisinde de fiskiran iki kaynak vardir"
        },
        {
            "chapter": 55,
            "verse": 67,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 68,
            "text": "Ikisinde de her türlü meyva, hurma ve nar vardir"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "Içlerinde güzel huylu, güzel yüzlü kadinlar vardir"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "Çadirlar içerisinde gözlerini yalniz kocalarina çevirmis hûriler vardir"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "Bunlardan önce onlara ne insan ne de cin dokunmustur"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "Yesil yastiklara ve hârikulâde güzel islemeli döseklere yaslanirlar"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "Simdi Rabbinizin hangi nimetlerini yalanliyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "Büyüklük ve ikram sahibi Rabbinin adi ne yücedir"
        }
    ]
}