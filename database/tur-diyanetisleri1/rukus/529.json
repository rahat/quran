{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adini tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratip düzene koyan O'dur"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir edip hidayeti gösteren O'dur"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Otlagi çikaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu karamsi bir sel köpügü haline getiren O'dur"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Bundan böyle sana Kur'ân'i okutacagiz da unutmayacaksin"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalniz Allah'in diledigi baskadir. Çünkü o açigi da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak kilacagiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Onun için ögüt ver, eger ögüt fayda verirse"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygisi olan ögüt alacaktir"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Pek bedbaht olan da ondan kaçinacaktir"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O ki, en büyük atese girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra ne ölecek onda, ne de hayat bulacaktir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu felah buldu (günahtan) temizlenen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adini anip namaz kilan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz dünya hayatini tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha hayirli ve daha kalicidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Kuskusuz bu ilk sahifelerde vardir"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim ve Musa'nin sahifelerinde"
        }
    ]
}