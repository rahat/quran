{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Günes'e ve onun pariltisina"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Günes'in ardindan gelen Ay'a"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Günes'i açip ortaya çikaran gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu örten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göge ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu döseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu biçimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kötülük ve takva kabiliyetini verene yemin olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Elbette nefsini temizleyip parlatan kurtulmustur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gömen de ziyan etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azginligiyla Hakk'i yalanladi"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azginlari ileri atilinca"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'in Rasulü (Salih peygamber) onlara: \"Allah'in devesini ve onun su nöbetini gözetin.\" demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onlar peygamberi yalanlayip deveyi kestiler. Rableri de günahlarini baslarina geçiriverdi de orayi dümdüz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Öyle ya, Allah bu isin sonundan korkacak degil ya"
        }
    ]
}