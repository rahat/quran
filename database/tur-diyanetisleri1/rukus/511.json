{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayir, andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Döndügü an o geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve açtigi sira o sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Kuskusuz o Sekar, büyük belalardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Uyarmak için insanlari"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Içinizden ileri gitmek veya geri kalmak isteyen kimseleri"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis kendi kazancina baglidir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak amel defterleri sagindan verilenler hariç"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennettedirler, sorup dururlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suçlularin durumunu"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Nedir sizi Sekar'a sokan?\" diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Suçlular der ki: \"Biz namaz kilanlardan degildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Bos seylere dalanlarla dalar giderdik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ceza gününü yalanlardik"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet bize ölüm gelip çatti"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artik onlara sefaatçilerin sefaati fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Simdi o Kur'ân'dan yüz çevirirlerken ne mazeretleri var"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki onlar ürkmüs yaban esekleri"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan kaçmaktalar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayir, onlardan her kisi kendisine açilmis sayfalar verilmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Yok, yok onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayir, hayir, O kur'ân kuskusuz bir ögüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen onu düsünür"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bununla beraber Allah dilemedikçe onlar ögüt alamazlar. Koruyacak da O'dur, bagislayacak da"
        }
    ]
}