{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun birbiri ardinca gönderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Büküp devirenlere"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydikça yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Seçip ayiranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Bir ögüt birakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Gerek özür için olsun, gerek uyari için"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Herhalde size vaad olunan kesinlikle olacaktir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Hani o yildizlar silindigi zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gök yarildigi zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar savruldugu zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Elçiler, tayin edilen vakitlerine erdirildikleri zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bunlar hangi güne ertelendiler"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hüküm gününe"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Bildin mi, nedir o hüküm günü"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gün yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Biz, öncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra geridekileri de onlara katariz"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Biz suçlulara böyle yapariz"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gün yalanlayanlarin vah haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Biz sizi âdi bir sudan yaratmadik mi"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu saglam bir yerde oturttuk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Demek ki biçimlendirmisiz. Ne güzel biçimlendireniz biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gün yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryüzünü bir tokat (toplanma yeri) yapmadik mi"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Gerek diriler, gerekse ölüler için"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yüksek yüksek daglar oturtup da size bir tatli su sunmadik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gün yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(Kiyameti yalanlayanlara söyle denir): \"Haydin gidin o yalanladiginiz seye dogru"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Haydi gidin o üç çatalli gölgeye (cehenneme)"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "O, ne gölgelendirir, ne alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O, saray gibi kivilcimlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki o kivilcimlar, sari sari (erkek deve sürüleridir)"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gün yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugün, konusamiyacaklari gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Kendilerine izin de verilmez ki, özür beyan etsinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gün yalanlayanlarin vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, iste o hüküm günüdür. Sizi ve öncekileri bir araya topladik"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir hileniz varsa beni atlatin"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gün yalanlayanlarin vay haline"
        }
    ]
}