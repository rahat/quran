{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "O her seyi kusatacak olan Kiyamet'in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yüzler var ki, o gün egilmis, zillete düsmüstür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalismis, yorulmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kizismis bir atese girer"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Onlara kizgin bir kaynaktan su verilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru bir dikenden baska yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne besler, ne de açligi giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yüzler de var ki, o gün nimetle mutludur"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptigindan hosnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos bir söz isitmez"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Yükseltilmis divanlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis koltuklar, yastiklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halilar vardir"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmiyorlar mi o develere, nasil yaratilmis"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göge bakmiyorlar mi, nasil yükseltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Bakmiyorlar mi daglara, nasil dikilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere bakmiyorlar mi, nasil yayilmis"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Haydi ögüt ver; sen simdi sirf bir ögütçüsün"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlarin üzerinde bir zorba degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve kâfir olursa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en büyük azap ile azap edecek"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Kuskusuz onlar döne dolasa bize gelecekler"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da bize hesap verecekler"
        }
    ]
}