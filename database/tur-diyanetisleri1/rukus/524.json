{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök çatladigi vakit"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yildizlar döküldügü vakit"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler yarilip akitildigi vakit"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi disina getirildigi vakit"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi önünden gönderdigini ve neyi geri biraktigini bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Ihsani bol Rabb'ine karsi seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yaratti, seni düzgün yapili kilip ölçülü bir biçim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni diledigi her hangi bir sekilde parçalardan olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayir hayir, siz cezayi yalanliyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa üzerinizde koruyucular var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli yazicilar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, siz her ne yaparsaniz bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Kuskusuz iyiler nimet içindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza günü ona girecekler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar o cehennemin gözünden kaçamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gününün ne oldugunu sen bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin nedir acaba o ceza günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün, hiç kimsenin baskasi için hiçbir seye sahip olamadigi gündür. O gün buyruk yalniz Allah'indir"
        }
    ]
}