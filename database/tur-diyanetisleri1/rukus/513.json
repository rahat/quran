{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Fakat o, ne sadaka verdi, ne namaz kildi"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanladi ve döndü"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da çalim sata sata ailesine gitti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Gerektir o bela sana, gerek"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Evet, gerektir o bela sana gerek"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan basibos birakilacagini mi sanir"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, dökülen erlik suyundan bir damla (sperm) degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra bir aleka (embriyon) oldu da Rabbi onu biçime koydu, sonra sekil verdi"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan da iki cinsi; erkek ve disiyi var etti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Peki, bunu yapanin ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}