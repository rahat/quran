{
    "chapter": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Ey libasına burunub or­tun­mus pey­gəmbər"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Qalx və insanları xə­bər­dar et"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Təkcə Rəbbini uca tut"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Geyimini təmiz saxla"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Pis seyləri tərk et"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Yaxsılıgı təmənna məq­sə­dilə etmə"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Rəbbin ucun səbir et"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Sur ufurulərkən –"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Cətin bir gun olacaq"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Həmin gun kafirlərə asan olma­ya­caq"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Məni yaratdı­gım kimsə ilə tək burax"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Mən ona bolluca var-dovlət ba­gıs­ladım"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "qaygısına qalan ogullar verdim"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "və onu hər cur imkan­larla təmin etdim"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Bunlara baxmayaraq, o, ye­nə də əlavə etməyimi arzu­layır"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Xeyr! Cunki o, ayələri­mizi inadla inkar edir"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Mən onu sərt bir yoxusa suruk­lə­yəcəyəm"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Cunki o, fikirləsərək qə­rara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona olum olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona olum ol­sun! Gor nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra uz-gozunu tursudub qas-qabagını tokdu"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını cevi­rib təkəb­bur gostərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbaz­lar­dan esidi­lib təkrarlanan sehr­dən bas­qa bir sey de­yil"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə sala­ca­gam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sag-salamat bu­rax­maz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun uzərində on doq­quz gozətci mələk var"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gozətci­lərini yal­nız mələklər­dən etdik və on­la­rın sa­yını on doqquz et­dik ki, bu, kafir­lər ucun ancaq bir sınaq ol­sun, ozlə­rinə Kitab verilənlər yəqinlik hasil etsin­lər, iman gə­ti­rən­lə­rin ima­nı art­sın, Kitab ve­rilən­lər və mo­min­lər haqqa subhə etmə­sin­lər və qəlblərində xəs­təlik olanlar və kafir­lər: “Allah bu mə­səllə nə demək istə­yir?”– desinlər. Allah istədiyi kimsəni belə az­dırır, is­­tədiyini də dogru yola yonəl­dir. Sə­nin Rəbbinin qo­sunları ba­rə­də yal­nız Ozu bilir. Bu, bə­səriyyət ucun ancaq bir xatır­latmadır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun donub uzaq­lasan ge­cəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun agarmaqda olan subh cagına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Dogrudan da o Cəhən­nəm ən bo­yuk fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəsəriyyət ucun xə­bərdar­lıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxsı islər gorub irəli cıxmaq və ya gunah edib geriyə dus­mək is­tə­yənlər ucun"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazan­dıgı­nın giro­vuna cevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sag tərəf sahiblərindən basqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cən­nətlərdə bir-bir­lərindən sorusacaq­lar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "gunahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qı­lanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməz­dik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sozlər danısanlarla birlikdə biz də danısardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gununu yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "olum yəqinliyi bizə gə­lə­nə qədər”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Odur ki, səfaət edən­lə­rin səfaəti onlara fayda verməz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Onlara nə olub ki, nəsi­hətdən uz don­dərirlər"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki urkudulmus vəhsi uzunqu­laqlardır ki"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ovculardan yaxud aslan­dan qacır­lar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Əksinə, onlardan hər bi­ri vəhy olunmus səhifələrin məhz ona verilmə­sini istəyir"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Xeyr! Əksinə, onlar Axi­rətdən qorxmurlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Xeyr! Bu Quran bir nə­sihətdir"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Istəyən onu xatır­layar"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bilin ki, Allah istəmə­dik­cə onlar xatırlaya bil­məz­lər. Mut­ləq qud­rətindən qorxub cə­kin­məyə layiq olan da, bagıs­la­maga qadir olan da Odur"
        }
    ]
}