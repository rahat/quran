{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ən Uca Rəbbinin adına təriflər de"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O Rəbbin ki, hər seyi ya­ra­dıb ka­milləsdirdi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O Rəbbin ki, hər seyin mu­qəddəratını əzəldən muəy­yən e­dərək yol gostərdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rəbbin ki, otlagı cu­cərt­di"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu qaralmıs sa­ma­na cevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Biz sənə Quranı oxudacagıq və sən onu unutmayacaqsan"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allahın istədi­yin­dən basqa. Subhəsiz ki, Allah askarı da, gizlini də bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Səni ən asan olana mu­vəf­fəq edə­rik"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Xatırlatmanın fayda ver­diyini gor­sən, onlara xatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allahdan qorxanlar oyud-nəsihət go­turərlər"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ən bədbəxt kimsələr isə onu qu­laqardına vurarlar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsə ki, Cəhənnəmə atılacaq"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O orada nə oləcək, nə də yasaya bil­əcək"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Gunahlardan təmizlənən kimsə isə ugur qazanmısdır"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "O kimsə ki, Rəbbinin adı­nı xatırla­yıb namaz qılmısdır"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Xeyr, siz dunya həyatını olduqca ustun tutursunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Axirət isə daha xeyirli və daha surəklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Həqiqətən də, bu, əv­vəl­ki səhifə­lərdə bildirilmisdir –"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahimin və Musanın sə­hifələ­rində"
        }
    ]
}