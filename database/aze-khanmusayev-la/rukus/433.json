{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Həqiqətən, Cəhənnəmdəki zəqqum agacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "gunahkar adamın yemə­yidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Əridilmis yagın cokun­tu­su kimi qarınlarda qaynayar –"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "qaynar su qaynayan ki­mi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu tutub Cəhənnəmin ortasına suruyun"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra əzab vermək ucun basına qaynar su tokun"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Dad bu əzabı! Sən ki qud­rətli və sərəfli idin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Sizin subhə etdiyiniz əzab budur"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Allahdan qorxanlar isə təhlu­kə­siz bir yerdə –"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "bagcalarda və cesmələr basında olacaqlar"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Taftadan və atlazdan li­baslar ge­yib qarsı-qarsıya əylə­səcək­lər"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Bax belə! Ustəlik, onları iri qa­ra ­gozlu hurilərlə də ev­lən­di­rə­cə­yik"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Onlar orada əmin-aman­lıq icində hər meyvədən istə­yə­cək­lər"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Onlar ilk olum­dən basqa orada hec bir olum dadmaya­caq­lar. Allah on­ları Cəhənnəm əzabından qorumusdur –"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "sənin Rəbbinin lutfkar­lı­gı sayə­sində. Məhz bu, bo­yuk ugur­dur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Biz Quranı sənin dilində asan­las­dırdıq ki, onlar oyud-nə­si­hət ala bilsin­lər"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Sən gozlə! Subhəsiz ki, onlar da gozləyirlər"
        }
    ]
}