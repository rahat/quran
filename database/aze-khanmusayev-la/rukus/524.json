{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Goy parcalanacagı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "ulduzlar səpələnəcəyi za­man"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "dənizlər dasıb bir-birinə qarısacagı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "qəbirlər cevriləcəyi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "hər kəs əvvəlcədən ozu ucun nəyi tədaruk edib, nəyi sonraya sax­ladıgını biləcək"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Səni oz Səxa­vətli Rəbbinə qarsı qoyan nədir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, səni yaradıb kamil­ləsdirdi və sənə gozəl bir surət verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Səni istədiyi səklə saldı"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Xeyr! Əksinə, siz Qiya­mə­ti yalan hesab edir­siniz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Həqiqətən, sizin ustu­nuz­də nə­za­rətcilər var –"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "cox mohtərəm, əməllə­ri­nizi ya­zanlar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar sizin nə etdiklə­ri­nizi bi­lirlər"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Həqiqətən, yaxsılar ne­mət icində ola­caqlar"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Subhəsiz ki, gunahkar­lar da Cə­hənnəmdə olacaqlar"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Onlar ora Haqq-hesab gunu girə­cəklər"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar əsla ondan yayına bilmə­yəcəklər"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sən haradan biləydin ki, Haqq-hesab gunu nədir"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Dogrudan da, sən hara­dan biləy­din ki, Haqq-hesab gunu nə­dir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun hec kəs hec kəsə fayda verə bilməz. O gun hokm yalnız Allaha məx­sus olacaq"
        }
    ]
}