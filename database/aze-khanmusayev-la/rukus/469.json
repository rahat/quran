{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Vaqiə qopacagı zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun qopdugunu hec kəs dana bilməz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, bəzilərini alcaldacaq, bə­zilərini də ucaldacaq"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddətlə titrədiyi za­man"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar parca-parca olub ovxalan­dıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "və ətrafa səpələnmis toz-torpaga donduyu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "siz uc dəstəyə ayrılacaq­sınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag tərəf sahibləri. Nə xos­bəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol tərəf sahibləri. Nə bəd­bəxtdir sol tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Xeyirxah islərdə ondə ge­dənlər, Cən­nətdə də ondə­dirlər"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allaha yaxın olan­lar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nəim cən­nətlərində qala­caq kimsələr­dir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların coxu əvvəlki nə­sillərdən"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "az bir qismi də axırın­cı­lardandır"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Onlar bəzənmis taxtlar ustundə"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "qarsı-qarsıya əyləsib dir­səklənə­cəklər"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların ətrafında həmi­səcavan xidmətci oglanlar fır­lana­caq­lar –"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "cesmə sərabı ilə dolu ba­dələr, bar­daqlar və qədəhlərlə –"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ondan basları agrımaz və məst ol­mazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "bəyənib secdikləri mey­vələr"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "və istədikləri qus əti ilə hərlənə­cəklər"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onları iri qara gozlu hu­rilər goz­ləyir –"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "sədəf icində saxlanılmıs mirvariyə bənzər hurilər"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Bu, onların etdikləri əməl­lərin mu­kafatı olacaq"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Onlar orada nə bos soz, nə də gu­naha səbəb olan soh­bət esi­də­cək­lər"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Ancaq: “Salam! Salam!”– sozləri esidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tərəf sahibləri. Nə xosbəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar tikansız sidr agac­ları arasın­da"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "meyvələri salxım-salxım asılmıs banan agacları altında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzanmıs kolgəliklərdə"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "daim axan sular kəna­rın­da"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "coxlu meyvələr –"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "tukənməz və qadagan edilməyən meyvələr icində"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "və hundur dosəklər us­tundə ola­caqlar"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz Cənnətdəki qadınları yeni bi­cimdə yaradacagıq"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakirə qızlar edə­cəyik –"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "ərlərini sevən, həmya­sıd­lar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bunlar sag tərəf sahib­lə­ri ucun­dur"
        }
    ]
}