{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaradan Rəbbinin adı ilə oxu"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı qan laxtasından yaratdı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oxu! Sənin Rəbbin mu­qa­yisəsiz sə­xavətə malikdir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "O, qələmlə yazmagı oy­rət­di"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmədiklərini oy­rətdi"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Xeyr! Insan, dogrudan da, həddini asır –"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "ozunun ehtiyacsız oldu­gunu zənn etdiyinə gorə"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Axı son donusun Rəb­bi­nədir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordunmu o kəsi ki, ma­ne olur –"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "bir bəndəyə namaz qıl­dı­gı zaman"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Soylə gorək, əgər o bən­də dogru yoldadırsa"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "yaxud Allahdan qorx­ma­gı əmr edirsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Soylə gorək, əgər o kafir haqqı yalan sayıb uz don­də­rib­sə, on­da necə olsun"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Məgər o bilmir ki, Allah gorur"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Xeyr! Əgər yaramaz əmə­linə son qoy­­ma­sa, Biz onun kə­ki­lin­dən tuta­cagıq –"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "yalancı, gunahkar kəki­lindən"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Qoy oz yıgnagını ca­gır­sın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz də əzab mələklərini cagıra­cagıq"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Xeyr, sən ona qulaq as­ma! Səcdə qıl və Allaha ya­xınlas"
        }
    ]
}