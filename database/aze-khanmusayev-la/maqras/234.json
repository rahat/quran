{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Peygəmbər qasqabagını tokdu və uzunu cevirdi –"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "yanına korun gəldiyinə gorə"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nə bilirdin ki, bəlkə o gu­nahlardan təmizlənəcəkdi"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "və yaxud nəsihət dinlə­yib fayda­lanacaqdı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Nəsihətə ehtiyacı olma­ya­na gəlincə isə"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sən ona diqqət yetirirsən"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun təmizlənməməyi­nin sənə bir aidiyyəti yox­dur"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Səy gostərib sənin yanına gələn"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allahdan qorxan kimsəyə gəlincə"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "sən ona məhəl qoymursan"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Xeyr! Subhəsiz ki, bu, bir nəsi­hətdir"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Kim istəsə, qoy onu xa­tırlayıb ibrət alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Bu Quran kəramətli sə­hi­fələr­də"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yuksək və pak səhifələr­də­dir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Bu səhifələr elcilərin əl­lə­rində –"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "mohtərəm və muti olan­ mələklərin əllə­rindədir"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Qoy olsun kafir insan! O necə də nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Qoy baxıb gorsun, Allah onu nədən yaradıb"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Allah onu nutfədən ya­ratdı və onu muəyyən səklə saldı"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da onun yolunu asanlas­dırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurub qə­bi­rə yerləs­dirdi"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra da istədiyi vaxt onu yenidən dirildə­cək"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Xeyr! O, hələ də Allahın ona bu­yurdugunu yerinə ye­tir­mə­mis­dir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Qoy insan yediyinə diq­qət yetir­sin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Həqiqətən, yagısı bol-bol Biz yag­dırırıq"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra da yeri cat-cat ya­rıb"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "orada taxıl yetisdiririk"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Habelə uzum və yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytun və xurma agac­la­rı"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "sıx-sıx baglar"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyvələr və otlar da bi­tiririk"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Bu nemətlər sizin isti­fa­də­niz və mal-qaranızın fayda­lan­ması ucun­dur"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Qulaqbatırıcı bir səs gə­ləndə –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "o gun insan qacacaq oz qarda­sından"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, atasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "həyat yoldasından və ovladla­rından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun onlardan hər biri­nin yetə­rincə isi olacaq­"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gun necə-necə uzlər par­layacaq"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "guləcək və fərəhlənə­cək­"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gun necə-necə uzlərə toz-torpaq hopacaq"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "onları zulmət buruyə­cək­"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Məhz onlar kafirlər, gu­nah­kar­lardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunəs sarınacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ulduzlar soluxub sonəcə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "daglar hərəkətə gətirilə­cə­yi zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "bogaz dəvələr baslı-bası­na qala­caq­ları zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vəhsi heyvanlar bir yerə toplanacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dənizlər alovlanacagı za­man"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "hər kəs oz tayına qo­vus­durulacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "diri-diri torpaga basdırıl­mıs qız usagı sorusulacagı za­man –"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hansı gunaha gorə oldu­rul­mus­dur"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "səhifələr acılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "goy qopardılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cəhənnəm alovlandırı­la­cagı za­man"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "və Cənnət mominlərə ya­xınlasdı­rılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "hər kəs bu gun ucun ozu­nə nə tə­daruk etdiyini bilə­cək­dir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "And icirəm gecə cıxıb gun­duz batan ulduzlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "seyrə cıxıb gizlənən səy­yarələrə"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "qaralmaqda olan gecəyə"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "və acılmaqda olan səhə­rə"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Həqiqətən, bu, gondər­di­yimiz moh­tə­rəm bir elcinin so­zu­dur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci ki, quvvətlidir, Ər­sin sahibi yanında boyuk hor­­mət sa­hi­bidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "orada itaət ediləndir, eti­barlı­dır"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin dostunuz Muhəm­məd di­vanə deyil"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "O, Cəbraili aydın ufuqdə gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, qeybdən gələn xəbərləri sizdən əsirgəyən de­yil"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu Quran dasqalaq olun­mus sey­tanın sozu də deyildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Elə isə ondan uz dondə­rib hara ge­dirsiniz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, aləmlərə yalnız bir nəsihətdir –"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "sizlərdən dogru yolda ol­maq istə­yənlər ucun"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Aləmlərin Rəbbi Allah istəmə­yincə, siz istəyə bilməz­siniz"
        }
    ]
}