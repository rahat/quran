{
    "pages": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "روى در هم كشيد و رخ برتافت"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "چون آن نابينا به سويش آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانى شايد او به پاكى گرايد- به سبب آنچه شنود"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "يا پند گيرد و آن پند سودش دهد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن كه بى‌نياز است- به مال و جاه"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو بدو روى مى‌آرى و به او مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و چيست بر تو- تو را چه زيان دارد- كه [آن كافر] پاكى نورزد؟- يا: و تو را باكى نيست كه او پاكى نمى‌ورزد"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن كه با كوشش و شتاب نزد تو آمده،"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالى كه [از خداى‌] مى‌ترسد،"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او [به ديگرى‌] مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "همانا اين [آيات قرآن‌] يادآورى و پندى است- براى آدميان"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر كه خواهد، آن را ياد كند و پند گيرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "[آنها] در دفترهايى است گرامى‌داشته،"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلندپايه و پاكيزه- از عيب و بيهوده و دروغ و از دستهاى شياطين"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "در دست سفيرانى"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار و نيكوكار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرده‌باد آدمى، چه كافر و ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "او را از چه چيز آفريد؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه‌اى آفريدش پس به اندازه‌اش نهاد"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه [به ايمان و طاعت‌] را برايش آسان ساخت"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "سپس او را بميرانيد و در گور كرد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس آنگاه كه بخواهد او را برانگيزد- باز زنده گرداند"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "نه چنين است كه هنوز آنچه را [خدا] به او فرمان داده نگزارده و بجاى نياورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس آدمى بايد به خوراك خود بنگرد- تا عبرت گيرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "همانا ما آب [باران‌] را فرو ريختيم فروريختنى"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمين را [با سر برآوردن گياهان‌] بشكافتيم شكافتنى"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پس در آن دانه‌ها رويانيديم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگور و سبزى،"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و درخت زيتون و خرما،"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و بوستانهاى پر درخت،"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و ميوه و علف،"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تا برخوردارى باشد براى شما و چارپايان شما"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون آن بانگ هول‌انگيز [رستاخيز] بيايد"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى كه آدمى از برادر خود مى‌گريزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادر و پدر خويش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از همسر و فرزندانش"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "هر مردى از آنان را در آن روز كارى است كه بدان مى‌پردازد- كسى به ديگرى نپردازد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "رويهايى در آن روز تابان و درخشان است"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان و شادمان"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و رويهايى در آن روز بر آنها گَرد نشسته است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تيرگى و سياهى آنها را فرو پوشد"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اينانند كافران بدكار گنه‌پيشه"
        }
    ]
}