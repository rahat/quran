{
    "chapter": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و آينده در شب،"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانى كه آينده در شب چيست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره درخشان است،"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "كه هيچ كس نيست مگر آنكه بر او نگهبانى هست"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس آدمى بايد بنگرد كه از چه آفريده شده؟"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفريده شده،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "كه از پشت [پدر] و استخوانهاى سينه مادر بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "هر آينه او"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "در روزى كه نهانها- نيتها و رازها- آشكار شود"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس او را نه نيرويى است و نه ياورى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان بازگردنده،"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "و به زمين شكاف‌دارنده- شكافنده به گياهان"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "كه هر آينه آن"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و سخنى بيهوده و شوخى نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "همانا آنان نيرنگ و ترفند مى‌انديشند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من نيز تدبير نهانى مى‌كنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده، اندكى فروگذارشان و درنگشان ده- تا عذاب ما بديشان فرا رسد"
        }
    ]
}