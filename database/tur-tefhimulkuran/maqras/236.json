{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök, yarılıp parçalandığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve ´kendi yaratılış gereğine uygun´ olarak Rabbine boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer, düzlendiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde olanları dışa atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve ´kendi yaratılış gereğine uygun´ olarak Rabbine boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, gerçekten sen, hiç durmaksızın Rabbine doğru bir çaba harcayıp durmaktasın; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Artık kimin kitabı sağ yanından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesap (sorgu) ile sorguya çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve kendi yakınlarına da sevinç içinde dönmüş olacaktır"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı ardından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O da, helâk (yok olmay)ı çağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Çılgın alevli ateşe girecek"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, (dünyada) kendi yakınları arasında sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Doğrusu o, (Rabbine) bir daha dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; gerçekten onun Rabbi, kendisini çok iyi görendi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, şafak vaktine yemin ederim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve toplayıp taşıdığı şeylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ondördüne girdiği zaman aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz, gerçekten tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Şu halde onlara ne oluyor ki iman etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur´an okunduğunda secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine, o nankörler, yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, onların içlerinde saklı tutmakta olduklarını daha iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Bu durumda sen, onlara acıklı bir azab ile müjde ver"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip salih amellerde bulunanlar başka; onlar için kesintisi olmayan bir ecir (mükâfat) vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçları olan göğe andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "O vadedilen güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şahid olana (görene) ve şahid olunana (görülene)"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahrolsun Ashab-ı Uhdûd"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "´Tutuşturucu yakıt dolu o ateş,´"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani kendileri (ateş hendeğinin) çevresinde oturmuşlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve mü´minlere yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Kendileri onlardan, yalnızca ´üstün ve güçlü olan,´ öğülen Allah´a iman ettiklerinden dolayı intikam alıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Ki O (Allah), göklerin ve yerin mülkü O´nundur. Allah (c.c.) her şeyin üzerinde şahid olandır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Gerçek şu ki, mü´min erkeklerle mü´min kadınlara işkence (fitne) uygulayanlar sonra da tevbe etmeyenler (yok mu); işte onlar için cehennem azabı vardır ve yakıcı azab onlar içindir"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Şüphesiz iman edip de salih amellerde bulunanlara gelince; onlar için de altından ırmaklar akan cennetler vardır. İşte büyük ´kurtuluş ve mutluluk´ budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrusu, Rabbinin ´zorlu yakalayışı´ şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Çünkü O, ilkin var eden, (sonra dirilterek) döndürecek olandır"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, çok bağışlayandır, çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arşın sahibidir; Mecid (pek yüce) dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Her dilediğini yapıp gerçekleştirendir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semûd (ordularının)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Hayır; küfretmekte olanlar, (kesintisiz) bir yalanlama içindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise, onları arkalarından sarıp kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır; o (Kitap), ´şerefli üstün´ olan bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve tarık´a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık´ın ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(Karanlığı) Delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Üzerinde gözetleyici koruyucu bulunmayan hiçbir nefis (kimse) yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan bir baksın, hangi şeyden yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Dökülüp atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(Bu su,) Bel kemiği ile kaburgalar arasında(ki organlar)dan çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Hiç şüphesiz (Allah,) onu yeniden döndürmeğe güç yetirendir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların orta yere çıkarılacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun ne gücü vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Dönüşlü olan göğe andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Yarılan yere de"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Hiç şüphesiz o (Kur´an), ayırdeden bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Doğrusu onlar, hileli bir düzen planlayıp kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir düzen kurup hazırlamaktayım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen şimdi küfretmekte olanlara bir mühlet ver, kendilerine az bir süre tanı"
        }
    ]
}