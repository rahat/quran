{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "ٱقۡرَأۡ بِٱسۡمِ رَبِّكَ ٱلَّذِي خَلَقَ"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "خَلَقَ ٱلۡإِنسَٰنَ مِنۡ عَلَقٍ (عَلَقٍ: قِطْعَةِ دَمٍ غَلِيظٍ)"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "ٱقۡرَأۡ وَرَبُّكَ ٱلۡأَكۡرَمُ"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "ٱلَّذِي عَلَّمَ بِٱلۡقَلَمِ"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "عَلَّمَ ٱلۡإِنسَٰنَ مَا لَمۡ يَعۡلَمۡ"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "كَلَّآ إِنَّ ٱلۡإِنسَٰنَ لَيَطۡغَىٰٓ (كَلَّا: حَقًّا, لَيَطْغَى: لَيَتَجَاوُزُ الحَدَّ فِي العِصْيَانِ، وَالكِبْرِ)"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "أَن رَّءَاهُ ٱسۡتَغۡنَىٰٓ (أَنْ رَّآهُ اسْتَغْنَى: بِسَبَبِ أَنْ رَأَى نَفْسَهُ مُسْتَغِنيًا بِمَالِهِ)"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجۡعَىٰٓ (الرُّجْعَى: الرُّجُوعَ، وَالمَصِيرَ)"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "أَرَءَيۡتَ ٱلَّذِي يَنۡهَىٰ (أَرَأَيْتَ: أَلَا تَعْجَبُ)"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "عَبۡدًا إِذَا صَلَّىٰٓ"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "أَرَءَيۡتَ إِن كَانَ عَلَى ٱلۡهُدَىٰٓ"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "أَوۡ أَمَرَ بِٱلتَّقۡوَىٰٓ"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "أَرَءَيۡتَ إِن كَذَّبَ وَتَوَلَّىٰٓ (وَتَوَلَّى: أَعْرَضَ عَنِ الإِيمَانِ)"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "أَلَمۡ يَعۡلَم بِأَنَّ ٱللَّهَ يَرَىٰ"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "كَلَّا لَئِن لَّمۡ يَنتَهِ لَنَسۡفَعَۢا بِٱلنَّاصِيَةِ (لَنَسْفَعًا: لَنَاخُذَنْهُ أَخْذًا عَنِيفًا فَنَطْرَحُهُ فِي النَّارِ, بِالنَّاصِيَةِ: بِمُقَدَّمِ رَاسِهِ)"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "نَاصِيَةٖ كَٰذِبَةٍ خَاطِئَةٖ (خَاطِئَةٍ: آثِمَةٍ)"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "فَلۡيَدۡعُ نَادِيَهُۥ (فَلْيَدْعُ: فَلْيُحْضِرْ، وَلْيُنَادِ, نَادِيَه: أَهْلَ مَجْلِسِهِ مِنْ قَوْمِهِ، وَعَشِيرَتِهِ)"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "سَنَدۡعُ ٱلزَّبَانِيَةَ (الزَّبَانِيَةَ: مَلَائِكَةَ العَذَابِ)"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "كَلَّا لَا تُطِعۡهُ وَٱسۡجُدۡۤ وَٱقۡتَرِب۩ (كَلَّا: لَيْسَ الأَمْرُ عَلَى مَا يَظُنُّ أَبُو جَهْلٍ, وَاقْتَرِبْ: ادْنُ مِنْهُ بِالطَّاعَةِ)"
        }
    ]
}