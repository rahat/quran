{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "وَٱلَّيۡلِ إِذَا يَغۡشَىٰ (يَغْشَى: يُغَطِّي بِظَلَامِهِ الأَرْضَ)"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ (تَجَلَّى: انْكَشَفَ بِضِيَائِهِ)"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلۡأُنثَىٰٓ"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "إِنَّ سَعۡيَكُمۡ لَشَتَّىٰ (لَشَتَّى: لَمُخْتَلِفٌ)"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "فَأَمَّا مَنۡ أَعۡطَىٰ وَٱتَّقَىٰ (أَعْطَى: بَذَلَ مَالَهُ مُتَصَدِّقًا)"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "وَصَدَّقَ بِٱلۡحُسۡنَىٰ (بِالْحُسْنَى: بِالثَّوَابِ عَلَى أَعْمَالِهِ)"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "فَسَنُيَسِّرُهُۥ لِلۡيُسۡرَىٰ (لِلْيُسْرَى: لِكُلِّ خَيْرٍ، وَسَعَادَةٍ)"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "وَأَمَّا مَنۢ بَخِلَ وَٱسۡتَغۡنَىٰ"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "وَكَذَّبَ بِٱلۡحُسۡنَىٰ"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "فَسَنُيَسِّرُهُۥ لِلۡعُسۡرَىٰ (لِلْعُسْرَى: لِكُلِّ عُسْرٍ، وَشَقَاوَةٍ)"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "وَمَا يُغۡنِي عَنۡهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ (وَمَا يُغْنِي: لَا يَنْفَعُهُ, تَرَدَّى: وَقَعَ فِي النَّارِ)"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "إِنَّ عَلَيۡنَا لَلۡهُدَىٰ (إِنَّ عَلَيْنَا لَلْهُدَى: عَلَيْنَا أَنْ نُبَيِّنَ طَرِيقَ الهُدَى؛ فَضْلًا مِنَّا وَرَحْمَةً)"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "وَإِنَّ لَنَا لَلۡأٓخِرَةَ وَٱلۡأُولَىٰ"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "فَأَنذَرۡتُكُمۡ نَارٗا تَلَظَّىٰ (تَلَظَّى: تَتَوَهَّجُ)"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "لَا يَصۡلَىٰهَآ إِلَّا ٱلۡأَشۡقَى (لَا يَصْلَاهَا: لَا يَدْخُلُهَا، وَيُقَاسِي حَرَّهَا)"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "ٱلَّذِي كَذَّبَ وَتَوَلَّىٰ"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "وَسَيُجَنَّبُهَا ٱلۡأَتۡقَى (وَسَيُجَنَّبُهَا: سَيُبْعَدُ عَنْهَا)"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "ٱلَّذِي يُؤۡتِي مَالَهُۥ يَتَزَكَّىٰ"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعۡمَةٖ تُجۡزَىٰٓ (تُجْزَى: تُكَافَأُ؛ فَلَيْسَ إِنْفَاقُهُ مُكَافَأَةً لِمَنْ أَحْسَنَ إِلَيْهِ)"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "إِلَّا ٱبۡتِغَآءَ وَجۡهِ رَبِّهِ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "وَلَسَوۡفَ يَرۡضَىٰ"
        }
    ]
}