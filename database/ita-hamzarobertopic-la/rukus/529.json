{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Glorifica il Nome del tuo Signore, l'Altissimo"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Colui Che ha creato e dato forma armoniosa"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Colui Che ha decretato e guidato"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Colui Che fa germinare i pascoli"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "e ne fa poi fieno scuro"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ti faremo recitare [il Corano] e non dimenticherai"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "se non cio che Allah vuole. Egli conosce il palese e l'occulto"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ti faciliteremo la [via] piu facile"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ricorda, che il Ricordo e utile"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "se ne ricordera chi teme [Allah]"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "e solo il malvagio se ne allontanera"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "brucera nel Fuoco piu grande"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "in cui non morra e non vivra"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Avra successo chi si sara purificato"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "e avra ricordato il Nome di Allah e assolto all'orazione"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ma voi preferite la vita terrena"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "mentre l'altra e migliore e piu duratura"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "In verita cio e nei Fogli antichi"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "i Fogli di Abramo e di Mose"
        }
    ]
}