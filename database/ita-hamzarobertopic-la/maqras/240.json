{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Non sa che, quando sara messo sottosopra quello che e nelle tombe"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "e reso noto quello che e nei petti"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "il loro Signore, in quel Giorno, sara ben informato su di loro"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "La Percotente"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "cos’e mai la Percotente"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "E chi potra farti comprendere cos’e la Percotente"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Il Giorno in cui gli uomini saranno come falene disperse"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "e le montagne come fiocchi di lana cardata"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "colui le cui bilance saranno pesanti"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "avra una vita felice"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "colui che invece avra bilance leggere"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "avra per dimora il Baratro"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "E chi potra farti comprendere cos’e"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "E un Fuoco ardente"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Il rivaleggiare vi distrarra"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "finche visiterete le tombe"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Invece no! Ben presto saprete"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "E ancora no! Ben presto saprete"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "No! Se solo sapeste con certezza"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Vedrete certamente la Fornace"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Lo vedrete con l’occhio della certezza"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "quindi in quel Giorno, sarete interrogati sulla delizia"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Per il Tempo"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Invero l’uomo e in perdita"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "eccetto coloro che credono e compiono il bene, vicendevolmente si raccomandano la verita e vicendevolmente si raccomandano la pazienza"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Guai ad ogni diffamatore maldicente"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "che accumula ricchezze e le conta"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "pensa che la sua ricchezza lo rendera immortale"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "No, sara certamente gettato nella Voragine"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "E chi mai ti fara comprendere cos’e la Voragine"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "[E] il Fuoco attizzato di Allah"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "che consuma i cuori"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Invero [si chiudera] su di loro"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "in estese colonne"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Non hai visto come agi il tuo Signore con quelli dell’elefante"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Non fece fallire le loro astuzie"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Mando contro di loro stormi di uccelli"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "lancianti su di loro pietre di argilla indurita"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Li ridusse come pula svuotata"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Per il patto dei Coreisciti"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "per il loro patto delle carovane invernali ed estive"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Adorino dunque il Signore di questa Casa"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Colui Che li ha preservati dalla fame e li ha messi al riparo da [ogni] timore"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Non vedi colui che taccia di menzogna il Giudizio"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "E quello stesso che scaccia l’orfano"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "e non esorta a sfamare il povero"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Guai a quelli che fanno l’orazione"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "e sono incuranti delle loro orazioni"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "che sono pieni di ostentazione"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "e rifiutano di dare cio che e utile"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "In verita ti abbiamo dato l’abbondanza"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Esegui l’orazione per il tuo Signore e sacrifica"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "In verita sara colui che ti odia a non avere seguito"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "Di’: “O miscredenti"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Io non adoro quel che voi adorate"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "e voi non siete adoratori di quel che io adoro"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Io non sono adoratore di quel che voi avete adorato"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "e voi non siete adoratori di quel che io adoro"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "a voi la vostra religione, a me la mia”"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Quando verra l’ausilio di Allah e la vittoria"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "e vedrai le genti entrare in massa nella religione di Allah"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "glorifica il tuo Signore lodandoLo e chiediGli perdono: in verita Egli e Colui che accetta il pentimento"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Periscano le mani di Abu Lahab, e perisca anche lui"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Le sue ricchezze e i suoi figli non gli gioveranno"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Sara bruciato nel Fuoco ardente"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "assieme a sua moglie, la portatrice di legna"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "che avra al collo una corda di fibre di palma"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "Di’: “Egli Allah e Unico"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah e l’Assoluto"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Non ha generato, non e stato generato"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "e nessuno e eguale a Lui”"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "Di’: “Mi rifugio nel Signore dell’alba nascente"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "contro il male che ha creato"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "e contro il male dell’oscurita che si estende"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "e contro il male delle soffianti sui nodi"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "e contro il male dell’invidioso quando invidia”"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "Di’: “Mi rifugio nel Signore degli uomini"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Re degli uomini"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Dio degli uomini"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "contro il male del sussurratore furtivo"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "che soffia il male nei cuori degli uomini"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "che [venga] dai demoni o dagli uomini”"
        }
    ]
}