{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(नबी ने) त्योरी चढ़ाई तथा मुँह फेर लिया।"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "इस कारण कि उसके पास एक अँधा आया।"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "और तुम क्या जानो शायद वह पवित्रता प्राप्त करे।"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "या नसीह़त ग्रहण करे, जो उसे लाभ देती।"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "परन्तु, जो विमुख (निश्चिन्त) है।"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "तुम उनकी ओर ध्यान दे रहे हो।"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "जबकि तुमपर कोई दोष नहीं, यदि वह पवित्रता ग्रहण न करे।"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "तथा जो तुम्हारे पास दौड़ता आया।"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "और वह डर भी रहा है।"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "तुम उसकी ओर ध्यान नहीं देते।"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "कदापि ये न करो, ये (अर्थात क़ुर्आन) एक स्मृति (याद दहानी) है।"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "अतः, जो चाहे स्मरण (याद) करे।"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "माननीय शास्त्रों में है।"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "जो ऊँचे तथा पवित्र हैं।"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ऐसे लेखकों (फ़रिश्तों) के हाथों में है।"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "जो सम्मानित और आदरणीय हैं।"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "इन्सान मारा जाये, वह कितना कृतघ्न (नाशुक्रा) है।"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "उसे किस वस्तु से (अल्लाह) ने पैदा किया"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "उसे वीर्य से पैदा किया, फिर उसका भाग्य बनाया।"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "फिर उसके लिए मार्ग सरल किया।"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "फिर मौत दी, फिर समाधि में डाल दिया।"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "फिर जब चाहेगा, उसे जीवित कर लेगा।"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "वस्तुतः, उसने उसकी आज्ञा का पालन नहीं किया।"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "इन्सान अपने भोजन की ओर ध्यान दे।"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "हमने मूसलाधार वर्षा की।"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "फिर धरती को चीरा फाड़ा।"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "फिर उससे अन्न उगाया।"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "तथा अंगूर और तरकारियाँ।"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "तथा ज़ैतून एवं खजूर।"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "तथा घने बाग़।"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "एवं फल तथा वनस्पतियाँ।"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "तुम्हारे तथा तुम्हारे पशुओं के लिए।"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "तो जब कान फाड़ देने वाली (प्रलय) आ जायेगी।"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "उस दिन इन्सान अपने भाई से भागेगा।"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "तथा अपने माता और पिता से।"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "एवं अपनी पत्नी तथा अपने पुत्रों से।"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "प्रत्येक व्यक्ति को उस दिन अपनी पड़ी होगी।"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "उस दिन बहुत से चेहरे उज्ज्वल होंगे।"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "हंसते एवं प्रसन्न होंगे।"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "तथा बहुत-से चेहरों पर धूल पड़ी होगी।"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "उनपर कालिमा छाई होगी।"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "वही काफ़िर और कुकर्मी लोग हैं।"
        }
    ]
}