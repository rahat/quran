{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "शपथ है उन फ़रिश्तों की जो डूबकर (प्राण) निकालते हैं"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "और जो सरलता से (प्राण) निकालते हैं।"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "और जो तैरते रहते हैं।"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "फिर जो आगे निकल जाते हैं।"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "फिर जो कार्य की व्यवस्था करते हैं।"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "जिस दिन धरती काँपेगी।"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "जिसके पीछे ही दूसरी कम्प आ जायेगी।"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "उस दिन बहुत-से दिल धड़क रहे होंगे।"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "उनकी आँखें झुकी होंगी।"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "वे कहते हैं कि क्या हम फिर पहली स्थिति में लाये जायेंगे"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "जब हम (भुरभुरी) (खोखली) अस्थियाँ (हड्डियाँ) हो जायेंगे।"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "उन्होंने कहाः तब तो इस वापसी में क्षति है।"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "बस वह एक झिड़की होगी।"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "तब वे अकस्मात धरती के ऊपर होंगे।"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "(हे नबी!) क्या तुम्हें मूसा का समाचार पहुँचा"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "जब पवित्र वादी 'तुवा' में उसे उसके पालनहार ने पुकारा।"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "फ़िरऔन के पास जाओ, वह विद्रोही हो गया है।"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "तथा उससे कहो कि क्या तुम पवित्र होना चाहोगे"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "और मैं तुम्हें तुम्हारे पालनहार की सीधी राह दिखाऊँ, तो तुम डरोगे"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "फिर उसे सबसे बड़ा चिन्ह (चमत्कार) दिखाया।"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "तो उसने उसे झुठला दिया और बात न मानी।"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "फिर प्रयास करने लगा।"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "फिर लोगों को एकत्र किया, फिर पुकारा।"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "और कहाः मैं तुम्हारा परम पालनहार हूँ।"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "तो अल्लाह ने उसे संसार तथा परलोक की यातना में घेर लिया।"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "वास्तव में, इसमें उसके लिए शिक्षा है, जो डरता है।"
        }
    ]
}