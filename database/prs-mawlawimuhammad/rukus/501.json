{
    "rukus": [
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس قسم به آنچه می‌بینید"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و به آنچه نمی‌بینید"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "که این (قرآن) سخن فرستاده (فرشته) بزرگوار است"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "و آن سخن شاعری نیست، اندکی ایمان می‌آورید"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و (قرآن) گفتۀ غیبگو و کاهن نیست، اندکی عبرت می‌گیرید"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "(بلکه) از سوی پروردگار جهانیان نازل شده است"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "و اگر (بالفرض) پیغمبر بعضی از سخنان را به دروغ به ما نسبت می‌کرد"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "البته او را با قدرت می‌گرفتیم"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "باز رگ دلش را قطع می‌کردیم"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "پس هیچ کس از شما منع کننده‌ای (جزای ما) از او نیست"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "البته قرآن برای پرهیزگاران نصیحت و پند است"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "و البته ما به یقین می‌دانیم که برخی از شما تکذیب‌کننده‌اید"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و البته آن (تکذیب) مایۀ حسرت بر کافران است"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و البته آن (قرآن سخن) حق و یقینی است"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس نام پروردگار بزرگت را به پاکی یاد کن"
        }
    ]
}