{
    "rukus": [
        {
            "chapter": 37,
            "verse": 114,
            "text": "و البته بر موسی و هارون منت نهادیم"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "و هردوی آنان و قومشان را از مصیبت بزرگ نجات دادیم"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "و آنان را مدد کردیم، پس ایشان بودند که غالب شدند"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "و به آن دو کتاب واضح و روشنگر دادیم"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "و آن دو را به راه راست هدایت کردیم"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "برای آن دو در ملت‌های آینده نام نیک باقی گذاشتیم"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سلام بر موسی و هارون"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "ما این چنین نیکوکاران را ثواب می‌دهیم"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "چون آن دو از بندگان مؤمن ما بودند"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "و البته الياس (هم) از پیغمبران بود"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "وقتی که به قومش گفت: آیا (از الله) نمی‌ترسید؟"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "آیا بت بعل را به دعا می‌خوانید و بهترینِ آفرینندگان را می‌گذارید؟"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "الله را، که پروردگار شما و پروردگار پدران پیشین شماست"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "پس او را تکذیب کردند. پس بدون شک آنان (در دوزخ) احضار خواهند شد"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "مگر بندگان مخلص الله"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "و برای او در ملت‌های آینده نام نیک باقی گذاشتیم"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "سلام بر الياس"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "ما این چنین نیکوکاران را ثواب می‌دهیم"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "چون او از بندگان مؤمن ما بود"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "و يقينا لوط از پیغمبران بود"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "(یادآور شو) وقتی را که او و خانواده‌اش، همگی را نجات دادیم"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "به جز پیرزنی که از باقی ماندگان بود"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "باز دیگران را هلاک کردیم"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "و البته شما صبحگاهان بر سرزمین ایشان عبور می‌کنید"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "و نیز گاهی در شب عبور می‌کنید، آیا نمی‌فهمید؟"
        }
    ]
}