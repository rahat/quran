    "pages": [
        {
            "chapter": 92,
            "verse": 15,
            "text": "جز بدبخت‌ترین انسان‌ها در آن درنیاید"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "آن که تکذیب کرد و روی گشتاند"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و پرهیزگارترین (انسان‌ها) از آن دور داشته خواهد شد"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "آن که مال خود را می‌دهد تا پاک شود"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هیچ کسی نزد او نعمتی ندارد که پاداش (آن را) ببیند"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "(انفاق نمی‌کند آن متقی) مگر برای کسب رضایت پروردگار والاترش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و البته به زودی راضی شود"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "قسم به وقت چاشت"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "و قسم به شب چون (تاریک شود و) آرام گیرد"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "پروردگارت تو را رها نکرده و بر تو خشم نگرفته است"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "و البته آخرت برای تو بهتر از دنیاست"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "و البته پروردگارت به تو (نعمت) خواهد داد که راضی و شادمان شوی"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "آیا تو را یتیم نیافت پس تو را جای داد؟"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "و تو را بی‌خبر (از احکام شرع) یافت پس هدایت کرد"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "و تو را فقیر یافت پس غنی گردانید"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "پس بر یتیم قهر مکن"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و سائل و گدا را از خود مران"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و اما نعمت‌های پروردگارت را بازگو کن"
        },
        {
            "chapter": 94,
            "verse": 1,
            "text": "آیا سینه‌ات را برایت نکشادیم؟"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "و بار سنگین را از تو برنداشتیم؟"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "همان باری که پشت تو را سنگین کرده بود"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "و آوازه‌ات را برایت بلند گردانیدیم"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "پس یقیناً با هر سختی آسانی است"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "یقیناً با (همان) سختی آسانی (دیگر) است"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "پس هرگاه فارغ شدی (از دعوت و تبلیغ)، پس بکوش (برای عبادت پروردگارت)"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "و (با رغبت و اشتیاق) به‌سوی پروردگارت روی آور"
