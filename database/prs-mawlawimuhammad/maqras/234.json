{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "روی ترش کرد و اعراض نمود"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "به این که نزد او نابینا آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانی که او شاید در پی پاکی باشد"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا پند گیرد، پس آن پند به او سودی رساند"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما کسی که خود را بی‌نیاز می‌داند"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو در پی او شدی؟"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و اگر او (شخص بی‌نیاز) پاک هم نشود، گناهی بر تو نیست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما کسی که شتابان نزد او آمد"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالی که (از الله) می‌ترسید"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو (به دیگران مشغول شده) از وی روی‌گردان می‌شوی"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "چنین نیست (که آن‌ها می‌پندارند) یقیناً قرآن وسیله‌ای پند است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هرکس (پند) بخواهد باید آن را یاد کند"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(همانا آیات قرآن) در صحیفه‌های قدرمند درج و محفوظ است"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "که بلندمرتبه و پاکیزه است"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دستِ نویسندگان"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار و نیک‌کردار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر این انسان (کافر و سرکش)، چه ناشکر است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(دقت نکرده که) الله او را از چه چیز آفریده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه (قطرۀ منی در رحم مادر) او را آفرید، پس (اندازۀ ماندن او در رحم مادر را) مقرر کرد"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "باز راه را برای او آسان گردانید"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "باز (بعد از پایان‌یافتن عمر) او را می‌میراند و در قبر می‌نهد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "باز هر وقتی که بخواهد او را زنده می‌کند"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "نه! آنچه را که به او فرمان داده بود انجام نداد"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس باید انسان به غذای خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "(که) ما آب را به فراوانی فرو ریختیم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "باز زمین را به خوبی شگافتیم"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پس در زمین دانه‌ها را رویانیدیم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و (درخت‌های) انگور و سبزیجات را"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و (درخت‌های) زیتون و خرما را"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌های پر درخت را"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و میوه‌ها و علف‌زارها (چراگاه‌ها) را"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(این همه را آفریدیم) برای نفع شما و حیواناتِ شما"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون آواز سخت و هولناک (قیامت) بیاید"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی که انسان از برادر خود می‌گریزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادر و پدر خود"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از زن و فرزند خود"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "(چون) هرکس از آنان در آن روز حالتی دارد که برایش کفایت می‌کند"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "در آن روز چهره‌هایی شاد و درخشانند"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "و خوش و خندانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و در آن روز چهره‌هایی است که بر آن‌ها غبار نشسته است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "چهرۀ آن‌ها را سیاهی و تاریکی پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "این‌ها همان گروه کافرِ بدکار‌اند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "وقتی که آفتاب پیچانیده شود (بی‌نور گردد)"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و وقتی که ستاره‌ها بی‌نور و تاریک شوند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و وقتی که کوه‌ها را روان سازند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و وقتی که ماده شترانِ باردار معطل گذاشته شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و وقتی که حیوانات وحشی حشر شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و وقتی که بحرها به جوش آیند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و وقتی که اجساد را با ارواح یکجا کنند"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و وقتی که از دختر زنده به گورشده پرسیده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "(که) به کدام گناه کشته شده است؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و وقتی که نامه‌های اعمال گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و وقتی که آسمان از جای کنده شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و وقتی که دوزخ شعله‌ور شود"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و وقتی که جنت (برای اهلش) نزدیک آورده شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "هرکس آنچه (از نیکی و بدی) را که آماده (و حاضر) کرده است بداند"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس قسم به ستاره‌های که بازمی‌گردند"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(ستارگان) حرکت کننده (باز در افق) نهان شونده"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "و قسم به شب چون برود"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و قسم به صبح چون بدمد"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "یقیناً (قرآن) سخن رسول گرامی است"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(که) او نیرومند است و در بارگاه صاحب عرش (الله) دارای منزلت والایی است"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "از او فرمان می‌برند، در آن جا (او) امین است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و هم صحبت شما (محمد) دیوانه نیست"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و البته (او) آن (فرشته) را در کنارۀ آشکار آسمان دید"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او بر رسانیدن سخن‌های غیب بخیل نیست"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و قرآن سخن شیطانِ رانده‌شده نیست"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس (قرآن را گذاشته) به کجا می‌روید؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "آن قرآن جز پند و اندرز برای جهانیان نیست"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "برای کسی از شما که بخواهد (کردارش) به راه راست، مستقیم شود"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و شما چیزی را نمی‌خواهید مگر آن که الله، پروردگار جهانیان آن را بخواهد"
        }
    ]
}