{
    "pages": [
        {
            "chapter": 37,
            "verse": 154,
            "text": "Size ne oldu, nasıl karar veriyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "Ogut almaz mısınız"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "Yoksa apacık bir delile mi sahipsiniz"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "Dogruysanız kitabınızı getirin"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "Hatta O'nunla cinler arasında bir akrabalık uydurdular. Halbuki cinler sorguya cekileceklerini bilirler"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "ALLAH onları yakıstırmalarından cok Yucedir"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "Kendilerini sadece ALLAH'a adayan kulları haric"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "Siz ve tapmakta olduklarınız"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "O'na karsı kimseyi saptıramazsınız"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "Ancak cehennemde yanacaklar haric"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "Her birimizin belli bir gorevi vardır"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "Biz, dizenleriz"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "Biz, anıp yuceltenleriz"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "Diyorlardı ki"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "Yanımızda oncekilerden bir uyarı bulunsaydı"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "Kendimizi ALLAH'a adar, sadece O'na kul olurduk"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "Boylece onu inkar ettiler; ileride bilecekler"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "Elcilikle gorevli kullarımız icin soz verilmistir"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "Onlar elbette zafere ulasacaklar"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "Bizim ordumuz kesinlikle ustun gelecektir"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "Oyleyse bir sure icin onlara aldırıs etme"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "Onları seyret; onlar da gorecekler"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "Azabımıza mı meydan okuyorlar"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "Yurtlarına inince uyarılanların sabahı ne kotu olur"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "Bir sureye kadar onlara aldırıs etme"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "Onları gozle; onlar da gorecekler"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "Ustunluk ve onurun sahibi olan Rabbin, onların nitelemelerinden cok yucedir"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "Gonderilmis elcilere selam olsun"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "Evrenlerin Rabbi olan ALLAH'a ovguler olsun"
        }
    ]
}