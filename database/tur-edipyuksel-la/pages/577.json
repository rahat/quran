    "pages": [
        {
            "chapter": 74,
            "verse": 48,
            "text": "Aracıların sefaati onlara bir yarar saglamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Oyleyse neden bu mesajdan yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Urkmus zebralar gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan kacan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her biri, kendisine ozel olarak acılmıs sayfalar verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Dogrusu, onlar ahiretten korkmuyor"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Dogrusu, bu bir oguttur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan ogut alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "ALLAH dilemezse onlar ogut alamazlar. O, erdemli davranmanın kaynagıdır; bagıslamanın kaynagıdır"
        },
        {
            "chapter": 75,
            "verse": 1,
            "text": "Dirilis Gunune and icerim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Surekli ozelestiride bulunan kisiye and icerim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Insan, kemiklerini bir araya toplayamayız mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet; parmak uclarını bile duzenlemeye gucumuz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Dogrusu, insan her seyin onune sergilenmesini ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Dirilis Gunu ne zaman?\" diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Gozun kamastıgı"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ayın tutuldugu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve gunes ile ay bir araya toplandıgı zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gun insanoglu, \"Kacacak yer nerede?\" der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, bir sıgınak yok"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun son durak Rabb'inin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun insana, yapıp yapmadıgı hersey haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Dogrusu, insan kendi kendisine tanıktır"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Birtakım ozurler ortaya atsa da"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu aceleye getirip dilini oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Onu toplamak da okutmak da bize duser"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Biz onu okudugumuz zaman, onun okunusunu izle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra, onu acıklamak da bizim gorevimizdir"
        }
    ]
}