{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun gunese ve onun aydınlıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izleyen aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu acıga cıkaran gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orten geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu kurana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yuvarlayıp doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu duzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona kotulugunu ve erdemliligini bildirene andolsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu temizleyen kurtulmustur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu basıbos bırakan ise zarar etmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud (halkı), azgınlıgı yuzunden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ayaklanmıstı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "ALLAH'ın elcisi, onlara, \"ALLAH'ın devesine ve onun suyuna dokunmayın,\" demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanlayıp deveyi bogazladılar. Bunun uzerine Rab'leri suclarından oturu onları silip yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Ne var ki hala onların sonlarından ders alınmıyor"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun burudugu zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya cıktıgı zaman gunduze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkegi ve disiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Isleriniz cesit cesittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir ve erdemli davranır"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve iyiyi, guzeli dogrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona iyice kolaylastırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat, kim cimrilik edip zenginlik taslar"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve iyiyi, guzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da zora yoneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Dustugu vakit kurtaramaz parası/malı onu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Dogruya biz iletiriz"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Sonu da ilki de biz kontrol ederiz"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alevli bir atese karsı uyardım"
        }
    ]
}