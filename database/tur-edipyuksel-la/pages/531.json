    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "Buyrugumuz goz kırpması gibi anidir"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "Sizin benzerlerinizi yok etmistik. Yok mu ogut alan"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "Tum yaptıkları kitaplarda kayıtlıdır"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "Kucuk ve buyuk hepsi yazılmıstır"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "Erdemliler, cennetler (bahceler) ve ırmaklar icindedir"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "Guclu Kralın yanında onurlu makamlardadırlar"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Rahman"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kuran'ı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı (acıklama yetenegini) ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes ve ay bir hesap ile (hareket etmekte) dir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Yıldızlar ve agaclar secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Gogu yukseltti ve olcuyu/dengeyi koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Ki olcuyu asmayasınız"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Olcuyu adaletle gozetiniz; olcuyu kaybetmeyiniz"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "Yeryuzunu tum yaratıklar icin yarattı"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Orada meyvalar, salkımlı hurma agacları vardır"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Kabuklu taneler ve baharatlar"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "(Ey insanlar ve cinler), Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı, comlek gibi kuru bir camurdan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cinleri de dumansız atesten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Rabbinizin hangi nimetlerini yalanlayabilirsiniz"
        }
    ]
}