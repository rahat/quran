{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "Bu yuzden onun buralarda bir dostu yoktur"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "Hic bir yiyecegi de... Irin haric"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "Onu ancak gunahkarlar yer"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "Yemin ederim gorduklerinize"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "Ve gormediklerinize"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "Ki bu serefli bir elcinin (getirdigi) sozdur"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "O bir sair sozu degildir; ne de az inanıyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "Kahin sozu de degildir; ne de az dusunuyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Evrenlerin Rabbinden indirilmedir"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "O bize bazı sozler yakıstırsa"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "Biz onu kuvvetle yakalar"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "Sonra, ondan vahyi keserdik"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "Ve sizden kimse de buna engel olamazdı"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "Kuskusuz bu, erdemliler icin bir hatırlatmadır"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "Icinizden yalanlayanlar oldugunu iyi biliyoruz"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "O, inkarcılar icin bir uzuntu kaynagıdır"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "O, kuskusuz mutlak gercektir"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Oyleyse Buyuk olan Rabbinin ismini yucelt"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "Sorgulayan birisi, gerceklesecek azabı sordu"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Onu inkarcılardan savacak kimse yoktur"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Yukselis Yollarının Sahibi olan ALLAH'tandır"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve ruh (vahiy/komutlar/Cebrail), elli bin yıla esit bir gun icinde O'na yukselir"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Simdi sen guzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Onlar onu uzak goruyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın goruyoruz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "Gun gelecek, gok erimis maden gibi"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Daglar ise atılmıs yun gibi olur"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost dostun durumunu sormaz"
        }
    ]
}