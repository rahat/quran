    "pages": [
        {
            "chapter": 74,
            "verse": 18,
            "text": "Nitekim o dusundu; olctu bicti"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Kahrolası, ne bicim olcup bicti"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Kahrolası, gene ne bicim olcup bicti"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Baktı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Sonra surat astı, kaslarını cattı"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Ve arkasını dondu; buyukluk tasladı"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Bu,\" dedi, \"etkileyici bir buyuden baska bir sey degil"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu sadece bir insan sozudur"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Onu Sakar'a atacagım"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sakar nedir bilir misin"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "Ne bırakır, ne de yuklenir (tam ve mukemmel)"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Halklar icin (evrensel) bir gostergedir/ekrandır"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Uzerinde ondokuz vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz atese bekci olarak sadece melekleri atadık. Onların sayısını (ondokuz'u) da, () inkarcılar icin bir fitne (sınav/huzursuzluk kaynagı) yaptık, () kitap verilmis olanları ikna etsin, () inananların inancını guclendirsin, () kitap verilmis olanlarla inananların kuskularını ortadan kaldırsın, ve () kalplerinde hastalık olanlarla inkarcılar da, \"ALLAH bu ornekle ne demek istiyor?\" desinler. Boylece ALLAH diledigini/dileyeni saptırır ve diledigini/dileyeni de dogruya iletir. Rabbinin ordularını kendisinden baskası bilmez. Bu (sayı) halklara bir mesajdır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, andolsun Ay'a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Gectigi vakit geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Agardıgı vakit sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Bu buyuklerden birisidir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Halklara bir uyarıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Ilerlemek yahut geride kalmak dileyenleriniz icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her kisi kendi gunahıyla mahkum olur"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sag tarafta olanlar haric"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetler icindedirler, sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suclulara"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi bu cezaya sokan nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Diyecekler ki, \"Desteklemezdik/namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Biz, bos seylere dalanlarla birlikte dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Yargı gununu yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet (simdi) kesin gercege ulastık"
        }
    ]
}