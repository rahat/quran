{
    "pages": [
        {
            "chapter": 37,
            "verse": 127,
            "text": "Onu yalanladılar; onlar hesaba cekileceklerdir"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "Kendilerini sadece ALLAH'a adayan kulları haric"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "Sonrakiler icin onun tarihini koruduk"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "Ilyasin'e salam olsun"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "Iyi davrananları biz boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "O bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "Lut da elcilerden biriydi"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "Onu ve ailesini topluca kurtardık"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "Ancak geride kalan yaslı kadın haric"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "Sonra digerlerini yok ettik"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "Siz yıkıntılarının yanından geciyorsunuz; sabahleyin"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "Ve geceleyin. Aklınızı kullanmaz mısınız"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "Yunus da elcilerden biriydi"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "Dolu bir gemiye kacmıstı"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "Karsı cıktı ve kayanlardan oldu"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "Balık onu yuttu, bundan o sorumluydu"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "(Tanrı'yı) anıp dusunmeseydi"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "Dirilis Gunune kadar onun karnında kalacaktı"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "Onu col gibi bir sahile attık, yorgun ve bitkin"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "Ve onun icin orada genis yapraklı agac yetistirdik"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "Biz onu yuzbin veya daha cok kisiye gonderdik"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "Inandılar, biz de onları bir sureye kadar gecindirdik"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "Sor onlara, kızları senin Rabbine, erkekleri kendilerine mi ayırıyorlar"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "Yoksa melekleri, onların gozu onunde disi olarak mı yarattık"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "Aslında onlar uydurdukları yuzunden diyorlar ki"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "ALLAH dogurdu.\" Onlar yalancıdırlar"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "Kızları erkeklere mi tercih etti"
        }
    ]
}