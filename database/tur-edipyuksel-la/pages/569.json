{
    "pages": [
        {
            "chapter": 70,
            "verse": 11,
            "text": "Birbirlerine gosterilirler. Suclu, o gunun azabından kurtulmak icin fidye vermek ister: Ogullarını"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "Esini, kardesini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "Kendisini yetistiren tum akrabalarını"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "Ve yeryuzunde bulunan herkesi, ki kurtulsun"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Hayır, o alevli atestir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Yakmak icin isteklidir"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Cagırır, sırtını donup gideni"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "Toplayıp kasaya saklayanı"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Dogrusu insan endiseli bir karaktere sahiptir"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine kotuluk dokundugu zaman umidini keser"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Kendisine iyilik dokundugu zaman ise cimridir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak namaz kılanlar haric"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Onlar ki namazlarını kacırmazlar"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "Paralarında bilinen bir pay (zekat) ayrılmıstır"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "Isteyen yoksula ve yoksuna"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "Onlar Din Gununu dogrularlar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rab'lerinin azabından cekinirler"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Rab'lerinin azabına guven olmaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "Onlar cinsel iliskiden sakınırlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Ancak esleri, yahut yeminlerinin/anlasmalarının hak sahibi olduklari haric; onlardan dolayı yerilmezler"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "bunun otesini arayanlar ise asırı gidenlerdir"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Onlar guvenilirdirler, sozlerine baglıdırlar"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Geregi gibi tanıklıkta bulunurlar"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarına ozen gosterirler"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "Onlar cennetlerde agırlanırlar"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "Peki simdi inkarcılara ne oluyor da senin onunde kosusuyorlar"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "Sagdan, soldan gruplar halinde"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "Herbiri, nimet cennetine sokulacagını mı umuyor"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "Asla; biz onları yarattık, bildikleri seyden"
        }
    ]
}