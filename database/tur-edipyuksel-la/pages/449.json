{
    "pages": [
        {
            "chapter": 37,
            "verse": 77,
            "text": "Onun soyunu ise yasattık"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "Ve biz onu daha sonrakiler icin bıraktık"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "Tarih boyunca Nuh'a selam"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "Biz guzel davrananları iste boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "O, bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "Sonra digerlerini bogduk"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "Ibrahim onun bir kolundan idi"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "Rabbine tertemiz bir kalp ile gelmisti"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "Babasına ve halkına, \"Neye tapıyorsunuz?\" demisti"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "ALLAH'ın dısında, uyduruk tanrılar mı istiyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "Evrenlerin Rabbini ne zannediyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "Yıldızlara bir goz attı"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "Bıktım, yoruldum artık,\" dedi"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "Onlar da onu bırakıp gittiler"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "Sonra, tanrılarına yoneldi ve \"Yemez misiniz?\" dedi"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "Neyiniz var, neden konusmuyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "Ve uzerlerine yuruyup tum gucuyle vurdu"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "Hemen ona dogru kosustular"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "Dedi ki, \"Yonttugunuz seylere mi tapıyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "ALLAH, sizi de ve yaptıgınız seyleri de yaratandır"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "Dediler ki, \"Onun icin bir yapı kurun ve onu atese atın"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "Onun icin bir plan dusunduler, fakat biz onları altettik"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "Dedi ki, \"Ben Rabbime gidiyorum; O bana yol gosterir"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "Rabbim, bana erdemli birini bagısla"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "Biz de ona yumusak huylu bir erkek cocuk bagısladık"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "Onunla birlikte calısma cagına varınca, \"Oglum,\" dedi, \"Ruyamda seni bogazlamam gerektigini goruyorum. Ne dusunuyorsun?\" \"Babacıgım,\" dedi, \"Sana emredileni uygula. ALLAH dilerse beni sabırlı bulacaksın"
        }
    ]
}