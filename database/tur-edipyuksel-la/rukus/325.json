{
    "rukus": [
        {
            "chapter": 26,
            "verse": 176,
            "text": "Eyke halkı da elcileri yalanladı"
        },
        {
            "chapter": 26,
            "verse": 177,
            "text": "Kardesleri Suayb onlara demisti ki, \"Erdemli olmayacak mısınız"
        },
        {
            "chapter": 26,
            "verse": 178,
            "text": "Ben size gonderilmis guvenilir bir elciyim"
        },
        {
            "chapter": 26,
            "verse": 179,
            "text": "ALLAH'ı dinleyin ve beni izleyin"
        },
        {
            "chapter": 26,
            "verse": 180,
            "text": "Buna karsı sizden herhangi bir ucret te istemiyorum. Benim ucretim ancak evrenlerin Rabbine aittir"
        },
        {
            "chapter": 26,
            "verse": 181,
            "text": "Olcuyu tam uygulayın. Kandıranlardan olmayın"
        },
        {
            "chapter": 26,
            "verse": 182,
            "text": "Dogru olcek ile tartınız"
        },
        {
            "chapter": 26,
            "verse": 183,
            "text": "Halkın hakkını kısmayın ve yeryuzunde kotuluk isleyerek karısıklık cıkarmayın"
        },
        {
            "chapter": 26,
            "verse": 184,
            "text": "Sizi ve onceki nesilleri yaratanı sayıp dinleyin"
        },
        {
            "chapter": 26,
            "verse": 185,
            "text": "Dediler ki, \"Sen buyulenmissin"
        },
        {
            "chapter": 26,
            "verse": 186,
            "text": "Sen sadece bizim gibi bir insansın ve biz senin yalan soyledigine inanıyoruz"
        },
        {
            "chapter": 26,
            "verse": 187,
            "text": "Dogru sozlu isen uzerimize gokten kutleler indir"
        },
        {
            "chapter": 26,
            "verse": 188,
            "text": "Dedi ki, \"Rabbim sizin ne yaptıgınızı cok iyi bilir"
        },
        {
            "chapter": 26,
            "verse": 189,
            "text": "Onu yalanladılar ve sonuc olarak Sayvan Gununun cezası kendilerini yakaladı; muthis bir gunun cezasıydı"
        },
        {
            "chapter": 26,
            "verse": 190,
            "text": "Bunda bir ders var; ancak cogunluk inanmaz"
        },
        {
            "chapter": 26,
            "verse": 191,
            "text": "Kuskusuz, senin Rabbin Ustundur, Rahimdir"
        }
    ]
}