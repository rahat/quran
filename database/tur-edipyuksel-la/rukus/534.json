{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun burudugu zaman geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Ortaya cıktıgı zaman gunduze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkegi ve disiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Isleriniz cesit cesittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir ve erdemli davranır"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve iyiyi, guzeli dogrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona iyice kolaylastırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Fakat, kim cimrilik edip zenginlik taslar"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve iyiyi, guzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Onu da zora yoneltiriz"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Dustugu vakit kurtaramaz parası/malı onu"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Dogruya biz iletiriz"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Sonu da ilki de biz kontrol ederiz"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alevli bir atese karsı uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Oraya talihsiz olandan baskası girmez"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "O ki yalanladı ve sırtını dondu"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Erdemli ise ondan uzak tutulacaktır"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "O ki malını vererek temizlenir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "Hic kimseden de buna karsılık bir iyilik beklemez"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Sadece En Yuce olan Rabbinin rızasını gozetir"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Kendisi de yakında mutlu olacaktır"
        }
    ]
}