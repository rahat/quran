{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin ismini eksikliklerden uzak tut"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki yarattı, duzene koydu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O ki olctu, yol gosterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O ki yesillikler bitirdi"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra onu kuruyup kararmıs bir samana cevirir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacagız; sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ALLAH'ın diledigi haric; O acıgı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Sana kolayı daha da kolaylastıracagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ogut yararlı olacaksa ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygı duyanlar ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Mutsuz ise ondan yan cizecektir"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ve buyuk atese girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Nitekim, orada ne olecek, ne de yasayacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Kurtulmustur arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin ismini anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ne var ki siz dunya hayatını seciyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve sureklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, ilk sayfalarda/ogretilerde kayıtlıdır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nın sayfalarında"
        }
    ]
}