{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerin korkunc bir depremle sarsıldıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yerin agırlıklarını fıskırttıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insanın da, \"Buna ne oluyor?\" dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun, insanlar yapmıs oldukları kendilerine gosterilsin diye bolukler halinde cıkagelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim bir atom agırlıgı iyilikte bulunursa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim bir atom agırlıgı kotulukte bulunursa onu gorur"
        }
    ]
}