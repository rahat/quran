{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Gezegenler sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler akıtılıp tasırıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Mezarların ici dısına cevrildigi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her kisi, yaptıgını ve yapmadıgını ogrenecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni Onurlu olan Rabbine karsı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki seni yarattı, duzenledi, uyumlu hale soktu"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi bir bicimde seni olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Dogrusu, siz, dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki ustunuzde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Onlar onurlu kayıtcılardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler nimetler icindedir"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler ise cehennemde"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din Gunu oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan hic ayrılamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din Gununun ne oldugunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, Din Gununun ne oldugunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun kimsenin kimseye yardımı dokunmaz. O gun tum kararlar yalnız ALLAH'a aittir"
        }
    ]
}