{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes yuvarlandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar sonup dustugu zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "En degerli mallar terkedildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Yabani hayvanlar toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kisiler ciftlestirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Canlı canlı gomulen kız cocugu soruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suctan oturu olduruldu diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Kayıtlar yayımlandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok yerinden oynatıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet yaklastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her kisi ne yapıp getirdigini bilir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Andolsun gizlenen yıldızlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp deliklerine girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Andolsun kararmaya baslayan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ve nefes almaga baslayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Bu, onurlu bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Gucludur; Yonetimin Sahibi katından yetkilidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendisine uyulmalı ve guvenilmeli"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız deli degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu apacık bir ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, hicbir haberi gizlemiyor"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulan seytanın sozu olamaz"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Oyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, tum halklara bir mesajdır"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dogru davranmak isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Ne dilerseniz, ancak evrenlerin Rabbi olan ALLAH'ın diledigine goredir"
        }
    ]
}