{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Esip savuranlara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Yuk yuklenenlere"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp gidenlere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Ve isi bolumlere ayıranlara andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size soz verilen kuskusuz bir gercektir"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Yargılama kesinlikle gerceklesecektir"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Mukemmel cizilmis yorungelere sahip goge andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Siz ihtilaf icindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Cevrilen, ondan cevrilir"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Kahrolsun palavracılar"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Ki saskınlıkları icinde umursamıyorlar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yargı Gununun zamanını sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gun onlar atese sunulacaklardır"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Cezanızı tadın, meydan okumakta oldugunuz sey budur iste"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Erdemliler cennetlerdedir, pınar baslarındadır"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rab'lerinin kendilerine verdigini alırlar. Cunku onlar bundan once guzel davranıyorlardı"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri az uyurlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seher vakitlerinde bagıslanma dilerlerdi"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Paralarında, isteyenler ve yoksullar icin bir pay vardı"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Kesin inananlar icin yerde ayetler (isaret ve deliller) vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi icinizde de... Gormez misiniz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gokte rızkınız ve size soz verilenler vardır"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Gogun ve yerin Rabbine andolsun ki sizin konusmanız nasıl bir gercek ise, bu da oylece bir gercektir"
        }
    ]
}