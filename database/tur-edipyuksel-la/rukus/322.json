{
    "rukus": [
        {
            "chapter": 26,
            "verse": 123,
            "text": "Ad (halkı) da elcileri yalanladı"
        },
        {
            "chapter": 26,
            "verse": 124,
            "text": "Kardesleri Hud onlara demisti ki, \"Erdemli davranmaz mısınız"
        },
        {
            "chapter": 26,
            "verse": 125,
            "text": "Ben, size gonderilmis guvenilir bir elciyim"
        },
        {
            "chapter": 26,
            "verse": 126,
            "text": "ALLAH'ı dinleyip bana uyun"
        },
        {
            "chapter": 26,
            "verse": 127,
            "text": "Buna karsılık sizden herhangi bir ucret te istemiyorum. Benim ucretim, ancak evrenlerin Rabbine aittir"
        },
        {
            "chapter": 26,
            "verse": 128,
            "text": "Her tepenin uzerine bir isaret (bir yapı) yerlestirip oyalanıyor musunuz"
        },
        {
            "chapter": 26,
            "verse": 129,
            "text": "Ebedi kalırsınız diye saglam yapılar mı edinirsiniz"
        },
        {
            "chapter": 26,
            "verse": 130,
            "text": "Yakaladıgınız vakit acımasız yakalıyorsunuz"
        },
        {
            "chapter": 26,
            "verse": 131,
            "text": "ALLAH'ı dinleyip bana uymalısınız"
        },
        {
            "chapter": 26,
            "verse": 132,
            "text": "Bildiginiz her seyi size vereni dinleyin"
        },
        {
            "chapter": 26,
            "verse": 133,
            "text": "Size ciftlik hayvanları ve cocuklar verdi"
        },
        {
            "chapter": 26,
            "verse": 134,
            "text": "Ustelik bahceler, pınarlar"
        },
        {
            "chapter": 26,
            "verse": 135,
            "text": "Sizin icin muthis bir gunun cezasından korkarım"
        },
        {
            "chapter": 26,
            "verse": 136,
            "text": "Dediler ki, \"Ogut versen de vermesen de bizce birdir"
        },
        {
            "chapter": 26,
            "verse": 137,
            "text": "Bu, bizden oncekilerin izledigi yasantı bicimidir"
        },
        {
            "chapter": 26,
            "verse": 138,
            "text": "Biz, cezalandırılacak da degiliz"
        },
        {
            "chapter": 26,
            "verse": 139,
            "text": "Boylece onu yalanladılar. Nihayet biz de onları yok ettik. Bunda bir ders var; ancak cogunluk inanmaz"
        },
        {
            "chapter": 26,
            "verse": 140,
            "text": "Kuskusuz senin Rabbin Ustundur, Rahimdir"
        }
    ]
}