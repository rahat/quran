{
    "rukus": [
        {
            "chapter": 15,
            "verse": 26,
            "text": "Insanı, kurumus, yıllanmıs balcıktan yarattık"
        },
        {
            "chapter": 15,
            "verse": 27,
            "text": "Cinleri de onceden, ice isleyen parlak atesten yarattık"
        },
        {
            "chapter": 15,
            "verse": 28,
            "text": "Rabbin meleklere, \"Kurumus, yıllanmıs balcıktan bir insan yaratacagım,\" demisti"
        },
        {
            "chapter": 15,
            "verse": 29,
            "text": "Onu duzenleyip ona ruhumdan ufledigimde hemen onun icin secdeye varın,\" demisti"
        },
        {
            "chapter": 15,
            "verse": 30,
            "text": "Tum melekler topluca secde ettiler"
        },
        {
            "chapter": 15,
            "verse": 31,
            "text": "Ancak Iblis (seytan) haric. Secde edenlerle beraber olmayı red etti"
        },
        {
            "chapter": 15,
            "verse": 32,
            "text": "Dedi ki: \"Seni secde edenlerle beraber olmaktan alıkoyan sey nedir, Iblis"
        },
        {
            "chapter": 15,
            "verse": 33,
            "text": "Dedi ki: \"Kurumus, yıllanmıs balcıktan yarattıgın insana secde edecek degilim"
        },
        {
            "chapter": 15,
            "verse": 34,
            "text": "(Tanrı:) \"Oyleyse cık oradan; sen kovuldun"
        },
        {
            "chapter": 15,
            "verse": 35,
            "text": "Yargı gunune kadar laneti hakkettin,\" dedi"
        },
        {
            "chapter": 15,
            "verse": 36,
            "text": "Rabbim, dirilecekleri gune kadar beni ertele,\" dedi"
        },
        {
            "chapter": 15,
            "verse": 37,
            "text": "Dedi ki: \"Tamam, sen ertelendin"
        },
        {
            "chapter": 15,
            "verse": 38,
            "text": "Bilinen vaktin gunune kadar"
        },
        {
            "chapter": 15,
            "verse": 39,
            "text": "Dedi ki: \"Rabbim, beni yoldan cıkarttıgın icin, onları yeryuzunde ayartıp topluca saptıracagım"
        },
        {
            "chapter": 15,
            "verse": 40,
            "text": "Kendilerini sadece sana adayanlar haric"
        },
        {
            "chapter": 15,
            "verse": 41,
            "text": "Dedi ki: \"Iste benim degismez yasam budur"
        },
        {
            "chapter": 15,
            "verse": 42,
            "text": "Elbette, sadece bana kulluk edenlere karsı bir gucun yoktur. Ancak sana uyan sapıklara gucun yeter"
        },
        {
            "chapter": 15,
            "verse": 43,
            "text": "Cehennem hepsinin bulusma yeridir"
        },
        {
            "chapter": 15,
            "verse": 44,
            "text": "Onun yedi kapısı vardır ve her bir kapı icin onlardan belli bir pay vardır"
        }
    ]
}