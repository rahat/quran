{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kacınılmaz olay gerceklestigi zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerceklesmesini artık yalanlayan cıkmaz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alcaltıcıdır, yucelticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yerin sallanıp sarsılacagı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve dagların paramparca edilecegi zaman"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Artık o toz duman haline gelmistir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler de uc bolume ayrılırsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Mutlular ne kadar da mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Mutsuzlar ne kadar da mutsuzdurlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Bir de ileri gecen oncu elitler vardır"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar (Tanrı'ya) yaklastırılanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerinde (bahcelerinde)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların buyuk bir kısmı onceki nesillerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Kucuk bir kısmı da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Luks mobilyalar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onlara olumsuz gencler servis yaparlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynaktan doldurulmus bardaklar, surahiler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne ara verirler ne de yorulurlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve begendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Guzel esler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Korunmus inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmıs olduklarına bir karsılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bir sacmalık, ne de gunaha sokan bir soz isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece, \"Selam, selam,\" derler"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tarafta olanlar sag tarafta olacaklar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz meyve agacları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmıs muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fıskıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bol meyveler icindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bunlar ne tukenirler, ne de yasak edilirler"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve onlar yukseltilmis mobilyalar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden bicimlendirdik"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, genclestirdik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Mukemmel bicimde eslenmislerdir"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag tarafta olanlar icindir"
        }
    ]
}