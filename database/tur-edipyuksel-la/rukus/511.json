{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, andolsun Ay'a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Gectigi vakit geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Agardıgı vakit sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Bu buyuklerden birisidir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Halklara bir uyarıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Ilerlemek yahut geride kalmak dileyenleriniz icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her kisi kendi gunahıyla mahkum olur"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sag tarafta olanlar haric"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetler icindedirler, sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suclulara"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi bu cezaya sokan nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Diyecekler ki, \"Desteklemezdik/namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Biz, bos seylere dalanlarla birlikte dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Yargı gununu yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet (simdi) kesin gercege ulastık"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Aracıların sefaati onlara bir yarar saglamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Oyleyse neden bu mesajdan yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Urkmus zebralar gibi"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan kacan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her biri, kendisine ozel olarak acılmıs sayfalar verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Dogrusu, onlar ahiretten korkmuyor"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Dogrusu, bu bir oguttur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen ondan ogut alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "ALLAH dilemezse onlar ogut alamazlar. O, erdemli davranmanın kaynagıdır; bagıslamanın kaynagıdır"
        }
    ]
}