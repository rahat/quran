{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "Andolsun Tur'a"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "Kaydedilmis kitaba"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "Ki parsomen uzerinde yayımlanmıs"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "Sık sık ziyaret edilen Eve (Kabe'ye)"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "Yukseltilmis tavana"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "Ve kaynatılmıs denize"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "Rabbinin cezalandırması kesinlikle gerceklesecektir"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "Onu engelleyecek hic bir guc yoktur"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "O gun gok sallanıp sarsılacak"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "Daglar yurutulup silinecek"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "Yalanlayanların vay haline o gun"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "Onlar ki bir bataklıkta oynamaktadırlar"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "Cehennem atesine itildikleri gun"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "Iste, yalanlamakta oldugunuz Ates budur"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "Bu bir buyu mudur, yoksa siz mi gormuyorsunuz"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "Orda yanın. Ister sabredin, ister sabretmeyin sizin icin degismeyecektir. Yaptıgınızın karsılıgını gormektesiniz"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "Erdemliler bahceler ve nimetler icindedir"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "Rab'lerinin kendilerine vermis oldugu seylerden zevk duyarlar. Rab'leri onları cehennem azabından korumustur"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "Yapmıs olduklarınıza karsılık afiyetle yeyin, icin"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "Dizilmis koltuklara yaslanmıslardır ve onları guzel eslerle eslendirmisizdir"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "Soyları tarafından izlenen inananlara soylarını da katarız ve onların yaptıklarından hic bir seyi eksiltmeyiz. Herkes kazanmıs oldugu seylerin bir ipotegidir"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "Onlara canlarının istedigi meyveden ve etten bol bol veririz"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "Orada birbirlerinden kadeh kapısırlar, onda ne bir sacmalama, ne de bir gunaha girme vardır"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "Cevrelerinde, inciler gibi korunmus kendilerine ait hizmetkarlar (servis icin) dolasıp durur"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "Birbirlerine donup gecmisi anarlar"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "Daha once halkımızın arasında cekinirdik,\" derler"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "ALLAH bize iyilik etti de bizi ice isleyen azaptan korudu"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "Biz daha once O'na yalvarırdık; O, Iyilik edendir, Rahimdir"
        }
    ]
}