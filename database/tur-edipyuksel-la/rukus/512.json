{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Dirilis Gunune and icerim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Surekli ozelestiride bulunan kisiye and icerim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Insan, kemiklerini bir araya toplayamayız mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet; parmak uclarını bile duzenlemeye gucumuz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Dogrusu, insan her seyin onune sergilenmesini ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Dirilis Gunu ne zaman?\" diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Gozun kamastıgı"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ayın tutuldugu"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve gunes ile ay bir araya toplandıgı zaman"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gun insanoglu, \"Kacacak yer nerede?\" der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, bir sıgınak yok"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun son durak Rabb'inin huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun insana, yapıp yapmadıgı hersey haber verilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Dogrusu, insan kendi kendisine tanıktır"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Birtakım ozurler ortaya atsa da"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu aceleye getirip dilini oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Onu toplamak da okutmak da bize duser"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Biz onu okudugumuz zaman, onun okunusunu izle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra, onu acıklamak da bizim gorevimizdir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Ne var ki, siz gecici (dunyayı) seviyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ahireti ise onemsemiyorsunuz"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gun bazı yuzler parlar"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabb'ine bakar"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "O gun bazı yuzler de var ki asıktır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Belkemiginin kırılacagının endisesi icindedir"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Dogrusu, (nefis) bogaza dayandıgı"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Ve, \"Care bulan var mı?\" dendigi zaman"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Bunun artık o ayrılık zamanı oldugunu anlar"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacakları birbirine dolasmıstır"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gun sevk Rabbine dogrudur"
        }
    ]
}