{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Elbette, zakkum agacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Gunahkarın yiyecegidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Derisik asit gibi ve midelerde kaynayacaktır"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Sıcak suyun kaynaması gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Onu yakalayın ve cehennemin ortasına surukleyin"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra basına kaynar su azabından dokun"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tad bakalım; sen cok ustun ve serefliydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Bu, iste kuskulanıp durdugunuz seydir"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Erdemli olanlar ise guvenlikli bir makamdadırlar"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Bahceler ve pınarlar icerisinde"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Ipek ve atlastan giysiler icinde karsılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Bu boyledir; onlara guzel esler vermisizdir"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Tam bir guvenlik icinde her meyveyi isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Orada, ilk olumden baska olum tatmazlar. Onları cehennem azabından korumustur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinin bir lutfu olarak. Iste buyuk zafer budur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Ogut alsınlar diye senin dilinle onu kolaylastırdık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Oyleyse bekle; onlar da beklemektedirler"
        }
    ]
}