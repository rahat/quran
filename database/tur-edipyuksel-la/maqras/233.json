{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi birbirlerine sorup duruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Buyuk haberi mı"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar onda anlasmazlık halindedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, ogreneceklerdir"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Hayır, kesinlikle ogreneceklerdir"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yapmadık mı yeryuzunu bir besik"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi ciftler halinde yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu de gecimi saglama zamanı olarak belirledik"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ve ustunuze yedi saglam (gogu) kurduk"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Parlayan bir lamba yerlestirdik"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Bulutlardan ise sarıl sarıl yagmur indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ki onunla taneler ve bitkiler"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve cesit cesit bahceler cıkaralım"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Yargılama Gunu, belirlenmis bir vakittedir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur'a ufuruldugu gun, hepiniz boluk boluk gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gok acılmıs; kapı kapı olmustur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulmus; serap olmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem ise gozetlemekte"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlar icin bir varıs yeri olarak"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada caglar boyu kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada bir serinlik ve bir icecek bulamazlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ancak kaynar su ve acı bir yiyecek haric"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına uygun bir karsılık olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Onlar bir hesap ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve ayetlerimizi, mucizelerimizi yalanladılar"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Halbuki biz herseyi sayıp yazmıstık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Oyleyse tadın, sizin sadece cezanızı arttıracagız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Erdemliler icin kurtulus vardır"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Baglar, bahceler"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Genc ve yasıt esler"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Dolu kadehler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada ne bir bos soz ne de bir yalan isitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Rabbinden bir karsılık; hesaplanmıs bir armagandır"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Goklerin, yerin ve aralarındakilerin Rabbidir, Rahman'dır. Hic bir davada O'na hitap edemezler"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Gun gelecek Ruh ve melekler sıra sıra dururlar. Rahman'ın izin verdikleri haric hic kimse konusamaz. Onlar da dogruyu soylerler"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Iste gercek gun budur. Dileyen, Rabbine dogru yol tutsun"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azap ile uyarmıs bulunuyoruz. O gun kisi yapmıs olduklarına bakar ve inkarcı ise, \"Keske toprak olsaydım!\" der"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun sokup cıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Rahatca cekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup akanlara"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarısıp birbirlerini gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve boylece emirleri uygulayanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun o sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir digeri izler"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun yurekler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozleri ise alcalır"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki, \"Daha onceki halimize mi dondurulduk"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz curumus kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Oyleyse bu zararına bir donustur,\" derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O bir tek durtusten ibarettir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Onlar uyanıvermislerdir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Sana Musa'nın tarihi ulastı mı"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Rabbi, kutsal Tuva vadisinde ona seslenmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun'a git; o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: Arınmayacak mısın"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbine ileteyim de saygılı olasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı ve karsı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra, sırtını dondu, (aleyhte) caba gosterdi"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp, ilan etti"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben sizin en yuce rabbinizim,\" dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Sonunda, ALLAH onu ahiret ve dunya cezasına carptı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Kuskusuz, saygı duyanlar icin bunda bir ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Siz mi, yoksa gok mu yaratılıs acısından daha zorludur? Onu O yaptı"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Onu alabildigine yukseltti ve duzenledi"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, sabahını ise ortaya cıkardı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeri de yumurta bicimine soktu"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlagını cıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dagları da caktı"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Tum bunlar sizin ve hayvanlarınızın gecimi icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Buyuk baskın geldigi zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gun insan, neyin ugrunda caba harcadıgını anlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cehennem goz onune cıkarılacaktır"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Azgınlara"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dunya hayatını yegleyenlere gelince"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Gidilecek yer cehennem olacaktır"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Rabbinin makamına karsı saygı duyan ve kendini kotu arzulardan alıkoyanlara gelince"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Gidilecek yer cennet olacaktır"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana Saat (dunyanın sonu) ne zaman gerceklesecektir diye soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Onu bildirmek, (ey Muhammed) senin gorevin degildir"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun kararı Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Senin gorevin, sadece ondan korkanları uyarmaktır"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gordukleri gun, sanki (dunyada) bir aksam veya kusluk vakti kadar kalmıslardır"
        }
    ]
}