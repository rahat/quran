{
    "maqras": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "Zalimleri toplayın. Eslerini ve"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "ALLAH'tan baska taptıklarını... Onlara cehennemin yolunu gosterin"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "Ve durdurun onları; sorguya cekileceklerdir"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "Neden bir birinize yardım etmiyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "Hayır, o gun tumuyle teslim olmuslardır"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "Donup birbirlerini sorgularlar"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "Siz bize sag yanımızdan yaklasıyordunuz,\" derler"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "Derler ki, \"Aslında siz inanmıs kimseler degildiniz"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "Bizim sizin uzerinizde her hangi bir gucumuz yoktu. Aksine siz azmıs bir topluluktunuz"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "Rabbimizin hakkımızdaki sozu gerceklesti, artık tadacagız"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "Biz azmıstık. Sizi de azdırdık"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "Boylece, o gun onlar azabta ortaktırlar"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "Biz suclulara boyle yaparız"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "Kendilerine \"La ilahe illa ALLAH\" denildiginde buyukleniyorlardı"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "Tanrılarımızı deli bir sair icin mi terkedecegiz?\" diyorlardı"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "Dogrusu, o, gercegi getirmis ve elcileri dogrulamıstır. Yine O diriltecektir. O her turlu yaratmayı bilendir"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "Siz elbette acı azabı tadacaksınız"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "Sadece yapmıs olduklarınızın karsılıgını goruyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "Kendilerini sadece ALLAH'a adamıs kulları haric"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "Onlar bilinen bir rızkı haketmislerdir"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "Meyvelerle agırlanacaklardır"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "Nimet cennetlerinde"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "Karsılıklı koltuklar uzerinde"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "Onlara pınarlardan doldurulmus kadehler sunulur"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "Durudur, icenlere zevk ve lezzet verir"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "Onda ne basagrısı ne de sarhosluk vardır"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "Yanlarında da, gozlerinin icine bakan guzel esler"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "Kornumus yumurtalar gibidirler"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "Birbirlerine donup sorusurlar"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "Iclerinden biri der ki, \"Benim bir arkadasım vardı"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "Soyle konusurdu, 'Sen de dogruluyor musun"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "Biz toprak ve kemik olduktan sonra mı, biz mi dirilecegiz"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "(Yanındakilere,) \"Bakar mısınız?\" der"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "Baktıgında, onu cehennemin ortasında bulur"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "ALLAH'a andolsun, az kalsın sen beni de mahfedecektin,\" der"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "Rabbimin nimeti olmasaydı, ben de simde seninle birlikte olurdum"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "(Sana gore), biz oldugumuzde"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "Ilk olum haric, cezalandırılmayacaktık hani"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "Iste buyuk zafer budur"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "Calısanlar bunun icin calısmalı"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "Bu mu daha iyi bir duraktır, yoksa zakkum agacı mı"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "Biz onu zalimler icin bir test kıldık"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "O, cehennemin dibinden cıkan bir agactır"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "Tomurcukları seytanların bası gibidir"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "Onlar ondan yiyerek karınlarını doyuracaklar"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "Bunun ustune onlar icin cehennemi bir kokteyl vardır"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "Sonra donusleri yine cehennemedir"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "Onlar, atalarını sapık kimseler olarak bulmuslardı"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "Ve onların izlerini korukorune izliyorlardı"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "Kendilerinden once de niceleri aynı sekilde sapmıstı"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "Iclerinden uyarıcılar gondermistik"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "Uyarılanların sonunun nasıl olduguna bir bak"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "Kendilerini sadece ALLAH'a adayan kulları haric"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "Nuh bize seslenmisti de ne guzel karsılık vermistik"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "Onu ve ailesini o buyuk felaketten kurtarmıstık"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "Onun soyunu ise yasattık"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "Ve biz onu daha sonrakiler icin bıraktık"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "Tarih boyunca Nuh'a selam"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "Biz guzel davrananları iste boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "O, bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "Sonra digerlerini bogduk"
        }
    ]
}