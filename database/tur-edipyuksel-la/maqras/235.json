{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Gezegenler sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler akıtılıp tasırıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Mezarların ici dısına cevrildigi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her kisi, yaptıgını ve yapmadıgını ogrenecektir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni Onurlu olan Rabbine karsı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki seni yarattı, duzenledi, uyumlu hale soktu"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi bir bicimde seni olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Dogrusu, siz, dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki ustunuzde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Onlar onurlu kayıtcılardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler nimetler icindedir"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler ise cehennemde"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din Gunu oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan hic ayrılamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din Gununun ne oldugunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, Din Gununun ne oldugunu bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun kimsenin kimseye yardımı dokunmaz. O gun tum kararlar yalnız ALLAH'a aittir"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Yazıklar olsun kandıranlara"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Halktan bir sey aldıklarında olcuyu tam uygularlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Verdikleri zaman ise olcuyu ve tartıyı eksik tutarlar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar hic dirileceklerini sanmazlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gunde"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gun halk Evrenlerin Rabbinin huzurunda dururlar"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Dogrusu, kotulerin yazgısı Siccin'dedir"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Siccin nedir bilir misin"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "Rakamlanmıs bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "O gun yalanlayanlara yazıklar olsun"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Onlar Din Gununu yalanlar"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Onu ancak azgın gunahkarlar yalanlar"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Kendisine ayetlerimiz iletildiginde, \"Efsane\" derdi"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Dogrusu, isledikleri gunahlar kalplerini kaplamıs"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Dogrusu, o gun onlar Rab'lerinden perdelenir"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Ve boylece onlar cehenneme atılır"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Yalanlamakta oldugunuz sey iste budur\" denir"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Dogrusu, iyilerin kitabı Illiyyun'dadır"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "Illiyyun nedir bilir misin"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Rakamlanmıs bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "(Tanrı'ya) yakın olanlar ona tanık olur"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Iyiler nimetler icindedir"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Koltuklar uzerinde cevreyi seyrederler"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Yuzlerinden nimetlerin sevinc ve parıltısını okursun"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Cesni katılmıs bir nektardan icirilecekler"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Cesnisi misktir. Yarısanlar iste bunun icin yarıssınlar"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Onun karısımı Tesnimdir"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "Ki o, (Tanrı'ya) yakın olanların ictigi bir pınardır"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Suclular, inananlara gulerlerdi"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Yanlarından gectikleri zaman da birbirlerine goz kas edip kucumserlerdi"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Taraftarlarının yanına dondukleri zaman da alaya alırlardı"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Onları gorduklerinde, \"Bunlar sapıklardır!\" derlerdi"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Oysa onların uzerine gozcu olarak gonderilmemislerdi"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Bugun de inananlar inkarcılara guler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Koltuklar uzerinde bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Inkarcılar yaptıklarıyla cezalandılar mı diye"
        }
    ]
}