{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin ismini eksikliklerden uzak tut"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki yarattı, duzene koydu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O ki olctu, yol gosterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O ki yesillikler bitirdi"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra onu kuruyup kararmıs bir samana cevirir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacagız; sen de unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ALLAH'ın diledigi haric; O acıgı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Sana kolayı daha da kolaylastıracagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ogut yararlı olacaksa ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygı duyanlar ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Mutsuz ise ondan yan cizecektir"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ve buyuk atese girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Nitekim, orada ne olecek, ne de yasayacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Kurtulmustur arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin ismini anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ne var ki siz dunya hayatını seciyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve sureklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu, ilk sayfalarda/ogretilerde kayıtlıdır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nın sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Sana o bunaltanın haberi ulastı mı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun yuzler saygı gosterir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısmıstır, yorgun dusmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir pınardan icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Degersiz bir yiyecegin dısında bir seyleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun baska yuzler de var ki mutludur"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından oturu sevinclidir"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bir sacmalık isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak var"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek mobilyalar var"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Kadehler konulmus"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Yastıklar dizilmis"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve halılar serilmistir"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmazlar mı develere, nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve goge, nasıl yukseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve daglara, nasıl dikildi"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yere, nasıl dosendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Hatırlat, cunku sen hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sen onları zorlayacak degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Fakat kim yuz cevirir ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "ALLAH onu en buyuk ceza ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Onların donusleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Hesaplarını gormek de bize duser"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun tan vaktine"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Cifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Ve gecmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Zeka sahipleri icin bunlar birer yemin degil midir"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Gormedin mi Rabbin ne yaptı Ad halkına"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Yuksek kulelere sahip Irem'e ki"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Hic bir ulkede esi ortaya konmamıstı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadideki kayaları oyan Semud'a"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Ve piramitler sahibi Firavun'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Tum bunlar ulkelerinde azmıslardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda kotulukleri yaygınlastırmıslardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Nitekim, Rabbin de ustlerine turlu felaketler yagdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Rabbin surekli gozetlemektedir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Rabbi, sınamak icin insana bolca verip sevindirdigi zaman, \"Rabbim bana comert davrandı,\" der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ancak ne zaman ki rızkını kısarak onu sınarsa, \"Rabbim beni kucuk dusurdu,\" der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır! Dogrusu siz oksuze comert davranmıyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmeye birbirinizi tesvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası da hak gozetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Parayı/malı da cok fazla seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Dogrusu, yer carpılıp paralandıgı zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin, dizi dizi meleklerle birlikte geldigi zaman"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ki cehennem de o gun getirilmistir. Iste o gun insan anlayacaktır. Artık anlamanın kendisine ne yararı var ki"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Keske bu hayatım icin onceden bir seyler yapsaydım,\" der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gun, O'nun cezası gibi bir cezayı kimse veremez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O'nun vurdugu bag gibisini de kimse baglayamaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey doygunluga ermis kisi"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Hosnut olarak ve hosnut olunarak Rabbine don"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Kullarımın arasına hosgeldin"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime hosgeldin"
        }
    ]
}