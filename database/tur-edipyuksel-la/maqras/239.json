{
    "maqras": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Gogsunu genisletip seni sakinlestirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Uzerindeki yukunu indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki belini bukmustu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin sanını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Elbette, kolaylık zorlukla birliktedir"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet, kolaylık zorlukla birliktedir"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Ne zaman fırsat bulursan ugras ver"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve sadece Rabbini arzula"
        },
        {
            "chapter": 95,
            "verse": 1,
            "text": "Andolsun incire ve zeytine"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "Sina Dagına"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "Ve andolsun bu guvenilir kente (Mekke'ye) ki"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Biz insanı en guzel bir bicimde yarattık"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Sonra onu asagıların asagısı kıldık"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "Ancak inanıp erdemli davrananlar haric; onlara kesintisiz bir odul vardır"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Artık neden hala bu dini yalanlıyorsun"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "ALLAH bilgelerin En Bilgesi degil midir"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin ismiyle oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir embriyodan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin En Comert/Yuce olandır"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalem yoluyla ogretir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmediklerini ogretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Dogrusu, insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Zenginlik taslayarak"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Elbette, donus senin Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordun mu, su engelleyeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ne dersin, o dogru yolu izleseydi"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut erdemliligi ogutleseydi"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ne dersin, o yalanlayıp yuz cevirdiyse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki ALLAH herseyi gormektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Dogrusu, buna son vermezse, yakalarız perceminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı ve gunahkar perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman haydi cagırsın kurultayını"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri cagıracagız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Asla, ona uyma; secde et ve yaklas"
        },
        {
            "chapter": 97,
            "verse": 1,
            "text": "Biz onu Kudret Gecesinde indirdik"
        },
        {
            "chapter": 97,
            "verse": 2,
            "text": "Kudret Gecesi ne kadar onemlidir, bilir misin"
        },
        {
            "chapter": 97,
            "verse": 3,
            "text": "Kudret Gecesi bin aydan daha hayırlıdır"
        },
        {
            "chapter": 97,
            "verse": 4,
            "text": "Melekler ve Ruh (Cebrail) o gece Rab'lerinin izniyle tum buyrukları yerine getirmek icin inerler"
        },
        {
            "chapter": 97,
            "verse": 5,
            "text": "O, tan yeri agarıncaya kadar esenliktir"
        },
        {
            "chapter": 98,
            "verse": 1,
            "text": "Kitap halkının inkarcıları ve putperestler, kendilerine acık delil/kanıt gelmesine ragmen yollarını terketmezler"
        },
        {
            "chapter": 98,
            "verse": 2,
            "text": "ALLAH'ın bir elcisi kendilerine arınmıs sahifeler okuyor"
        },
        {
            "chapter": 98,
            "verse": 3,
            "text": "Onda dosdogru ogretiler vardır"
        },
        {
            "chapter": 98,
            "verse": 4,
            "text": "Gercek su ki, kendilerine kitap verilmis olanlar, ancak onlara acık delil geldikten sonra ayrılıga dustuler"
        },
        {
            "chapter": 98,
            "verse": 5,
            "text": "Oysa onlardan, dini sadece ALLAH'a ait kılan tektanrıcılar (monoteist) olarak O'na kulluk etmeleri, namazı gozetmeleri ve zekatı vermeleri istenmisti. Iste dosdogru din budur"
        },
        {
            "chapter": 98,
            "verse": 6,
            "text": "Kitap halkının inkarcıları ve putperestler, cehennem atesinin icindedirler ve orada ebedi kalıcıdırlar. Onlar, yaratıkların en kotusudur"
        },
        {
            "chapter": 98,
            "verse": 7,
            "text": "Inanıp erdemli davrananlar ise yaratıkların en iyisidir"
        },
        {
            "chapter": 98,
            "verse": 8,
            "text": "Rableri katındaki odulleri, icinden ırmaklar akan cennetlerdir. Orada ebedi olarak kalacaklardır. ALLAH onlardan hosnut olmus, onlar da O'ndan hosnut olmuslardır. Rabbine saygı gosterenin odulu iste boyledir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerin korkunc bir depremle sarsıldıgı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Yerin agırlıklarını fıskırttıgı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Insanın da, \"Buna ne oluyor?\" dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun (yer), haberlerini anlatacaktır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun, insanlar yapmıs oldukları kendilerine gosterilsin diye bolukler halinde cıkagelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim bir atom agırlıgı iyilikte bulunursa onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim bir atom agırlıgı kotulukte bulunursa onu gorur"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Andolsun soluyarak asanlara"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "Ates sacarak gidenlere"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah sabah akın edenlere"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Toz koparanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Ve toplulugun icine dalanlara ki"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Insan Rabbine karsı cok nankordur"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Ustelik buna da tanıktır"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "O mala cok duskundur"
        }
    ]
}