{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi ki, mezardakiler ortaya atıldıgı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Ve goguslerde gizlenenler acıga cıkarıldıgı zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Evet o gun Rab'leri onların herseyinden haberlidir"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Sok"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Hem de ne sok"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Soke edenin niteligi sana bildirildi mi"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun halk, yayılmıs kelebekler gibi olur"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar da atılmıs yun gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları agır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, mutlu bir hayat icinde olacaktır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun da anası ucurumdur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "O ucurumun ne oldugunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir atestir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Cogaltma yarısı sizi alabildigine mesgul etti"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Mezarlara varıncaya (olunceye) kadar"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Dogrusu, yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Elbette, yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Dogrusu, kesin olarak bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Cehennemi gorurdunuz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Zaten, onu gozunuzle kesin olarak goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra, o gun (size verilen) nimetlerden sorulacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun akıp giden zamana ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Insanlar zarardadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak inanıp erdemli davrananlar, birbirlerine gercegi ogutleyenler ve birbirlerine sabretmeyi ogutleyenler haric"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Yazıklar olsun her dedikoducuya ve iftiracıya"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Ki o para/mal biriktirir ve onu sayar durur"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Sanki parası/malı onu olumsuz yapacakmıs gibi"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Asla; onu Hutama'ya atacagım"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutama'nın ne oldugunu bilir misin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "ALLAH'ın tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Ki beyinlere isler"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Onların uzerine kapanmıstır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Yukselen direkler arasında"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin fil halkını ne hale soktuguna dikkat ettin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Planlarını bosa cıkarıp onları saskına cevirmedi mi"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların ustune kus suruleri gonderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara camurdan sertlesmis taslar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Ve boylece onları yenmis ekin gibi perisan etmisti"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys (bu mesajı) bagrına basmalı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Kıs ve yaz kervanlarını sevdikleri gibi"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu evin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O ki onları aclıktan kurtarıp doyurdu ve korkudan guvene kavusturdu"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste, oksuze kotu davranan odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulları doyurmaya da yanasmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Yazıklar olsun o namaz kılanlara"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar ki namazlarından tumuyle habersizdirler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar ki gosteris yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardımı da engellerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana bolca nimetler verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Oyleyse Rabbin icin namaz kıl ve kendini ada/yonel"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl mahfolacak olanlar sana kin duyanlardır"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki, \"Ey inkarcılar"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben, sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim taptıgıma tapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben asla sizin taptıgınıza tapacak degilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim taptıgıma tapacak degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "ALLAH'ın yardımı ve zafer geldigi zaman"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Halkın akın akın ALLAH'ın dinine girdigini goreceksin"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini overek yucelt ve ondan bagıslanma dile. O, tevbeleri surekli kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ates kurukleyenin elleri kahrolsun, zaten kendisi kahroldu"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ne parası, ne de bir kazancı ona yaramadı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alev sahibi bir atese girecektir"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Odun tasıyan (zulmun atesine yakıt hazırlayan) karısı da"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda, dikenlerden/liften orulmus bir ip bulundugu (kotulukleri boynuna dolanmıs) halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki, \"O ALLAH bir tektir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "ALLAH Sonsuz ve Mutlaktır"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Dogurmamıstır, dogurulmamıstır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hicbir kimse de O'na denk degildir"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki, \"Safagın Rabbine sıgınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Coktugu zaman karanlıgın serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Arabozucuların, sozlesmeleri bozanların serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Kıskandıgı vakit kıskananın serrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki, \"Sıgınırım halkın Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Halkın Yoneticisine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Halkın Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Serrinden sinsice fısıldayanların"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Onlar halkın gogsune fısıldarlar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Onlar hem cinlerden hem de halktandır"
        }
    ]
}