{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kacınılmaz olay gerceklestigi zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerceklesmesini artık yalanlayan cıkmaz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alcaltıcıdır, yucelticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yerin sallanıp sarsılacagı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve dagların paramparca edilecegi zaman"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Artık o toz duman haline gelmistir"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler de uc bolume ayrılırsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Mutlular ne kadar da mutludurlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Mutsuzlar ne kadar da mutsuzdurlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Bir de ileri gecen oncu elitler vardır"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar (Tanrı'ya) yaklastırılanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimet cennetlerinde (bahcelerinde)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların buyuk bir kısmı onceki nesillerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Kucuk bir kısmı da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Luks mobilyalar uzerinde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onlara olumsuz gencler servis yaparlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynaktan doldurulmus bardaklar, surahiler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ne ara verirler ne de yorulurlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ve begendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Guzel esler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Korunmus inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yapmıs olduklarına bir karsılık olarak verilir"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bir sacmalık, ne de gunaha sokan bir soz isitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Sadece, \"Selam, selam,\" derler"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tarafta olanlar sag tarafta olacaklar"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz meyve agacları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkımları sarkmıs muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fıskıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bol meyveler icindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bunlar ne tukenirler, ne de yasak edilirler"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve onlar yukseltilmis mobilyalar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz kadınları yeniden bicimlendirdik"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, genclestirdik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Mukemmel bicimde eslenmislerdir"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag tarafta olanlar icindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Onların bir cogu onceki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Onların bir cogu da sonraki nesillerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol tarafta bulunanlar, sol tarafta olacaklardır"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Isleyen ve kaynayan bir azap icindedirler"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Sıcak golgeler altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne soguktur, ne de yararlı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Bundan once onlar konfor icinde sımarmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahı islemekte direniyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Diyorlardı ki, \"Biz oldukten, toz ve kemige donustukten sonra mı diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Onceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki, \"Oncekiler de, sonrakiler de"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Bilinen gunun bulusma anı icin toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra da siz, ey sapıtmıslar, ey yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Zakkum agacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Onunla karnınızı dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Ve uzerine kaynar su iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamıs devenin icisi gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Yargı gununde iste boyle agırlanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık, dogrulamanız gerekmez miydi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Attıgınız meniye dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Siz mi onu yaratıyorsunuz, yoksa biz mi yaratıyoruz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda olumunuzu onceden biz belirledik. Kimse bizi engelleyemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi baska nesillerle degistirmekten, yahut sizi bilmediginiz bir bicimde yaratmaktan"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Ilk yaratılısı biliyorsunuz. Ogut almalı degil misiniz"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginize dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Siz mi onu yetistiriyorsunuz, yoksa biz mi"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu samana cevirirdik de siz sasardınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Borca girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Dogrusu, yoksun bırakıldık"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Icmekte oldugunuz suya dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu bulutlardan siz mi indiriyorsunuz, yoksa biz mi"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Sukretmez misiniz"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Yakmakta oldugunuz atese dikkat ettiniz mi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi baslattınız, yoksa biz mi baslatmaktayız"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Kullananlar icin biz onu bir ibret ve yararlı yaptık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse Buyuk Rabbinin ismini yucelt"
        }
    ]
}