{
    "maqras": [
        {
            "chapter": 37,
            "verse": 83,
            "text": "Ibrahim onun bir kolundan idi"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "Rabbine tertemiz bir kalp ile gelmisti"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "Babasına ve halkına, \"Neye tapıyorsunuz?\" demisti"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "ALLAH'ın dısında, uyduruk tanrılar mı istiyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "Evrenlerin Rabbini ne zannediyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "Yıldızlara bir goz attı"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "Bıktım, yoruldum artık,\" dedi"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "Onlar da onu bırakıp gittiler"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "Sonra, tanrılarına yoneldi ve \"Yemez misiniz?\" dedi"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "Neyiniz var, neden konusmuyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "Ve uzerlerine yuruyup tum gucuyle vurdu"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "Hemen ona dogru kosustular"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "Dedi ki, \"Yonttugunuz seylere mi tapıyorsunuz"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "ALLAH, sizi de ve yaptıgınız seyleri de yaratandır"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "Dediler ki, \"Onun icin bir yapı kurun ve onu atese atın"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "Onun icin bir plan dusunduler, fakat biz onları altettik"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "Dedi ki, \"Ben Rabbime gidiyorum; O bana yol gosterir"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "Rabbim, bana erdemli birini bagısla"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "Biz de ona yumusak huylu bir erkek cocuk bagısladık"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "Onunla birlikte calısma cagına varınca, \"Oglum,\" dedi, \"Ruyamda seni bogazlamam gerektigini goruyorum. Ne dusunuyorsun?\" \"Babacıgım,\" dedi, \"Sana emredileni uygula. ALLAH dilerse beni sabırlı bulacaksın"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "Boylece ikisi de teslim oldu ve onu alnı uzerine yıktı"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "Kendisine, \"Ibrahim!\" diye seslendik"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "Sen ruyanı uyguladın.\" Iyileri boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "Gercekten bu apacık bir sınavdı"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "Ve biz ona fidye olarak buyuk bir kurban verdik"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "Sonrakiler icin onun tarihini koruduk"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "Ibrahim'e selam olsun"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "Biz iyi davrananları boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "O, bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "Ona Ishak'ı mujdeledik, erdemlilerden bir peygamber olarak"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "Ona da Ishak'a da lutufta bulunduk. Kuskusuz, ikisinin de soyundan hem iyi davrananlar var, hem kendisine zulmedenler"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "Biz Musa'ya ve Harun'a iyilikte bulunmustuk"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "Ikisini ve halklarını o buyuk felaketten kurtardık"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "Onlara yardım ettik de ustun geldiler"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "Ve o ikisine apacık anlasılan kitabı verdik"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "Her ikisini dogru yola ilettik"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "O ikisinin tarihini sonrakiler icin koruduk"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "Musa'ya ve Harun'a selam (barıs) olsun"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "Biz, iyi davrananları iste boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "O ikisi bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "Ilyas elcilerden biriydi"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "Halkına, \"Erdemli olmayacak mısınız?\" dedi"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "En guzel Yaratanı bırakıp Ba'le mi taparsınız"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "ALLAH sizin ve gecmisteki atalarınızın Rabbidir"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "Onu yalanladılar; onlar hesaba cekileceklerdir"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "Kendilerini sadece ALLAH'a adayan kulları haric"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "Sonrakiler icin onun tarihini koruduk"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "Ilyasin'e salam olsun"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "Iyi davrananları biz boyle odullendiririz"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "O bizim inanan kullarımızdandı"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "Lut da elcilerden biriydi"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "Onu ve ailesini topluca kurtardık"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "Ancak geride kalan yaslı kadın haric"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "Sonra digerlerini yok ettik"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "Siz yıkıntılarının yanından geciyorsunuz; sabahleyin"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "Ve geceleyin. Aklınızı kullanmaz mısınız"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "Yunus da elcilerden biriydi"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "Dolu bir gemiye kacmıstı"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "Karsı cıktı ve kayanlardan oldu"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "Balık onu yuttu, bundan o sorumluydu"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "(Tanrı'yı) anıp dusunmeseydi"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "Dirilis Gunune kadar onun karnında kalacaktı"
        }
    ]
}