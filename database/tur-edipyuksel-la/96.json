{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin ismiyle oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı bir embriyodan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbin En Comert/Yuce olandır"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalem yoluyla ogretir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmediklerini ogretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Dogrusu, insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Zenginlik taslayarak"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Elbette, donus senin Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordun mu, su engelleyeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ne dersin, o dogru yolu izleseydi"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut erdemliligi ogutleseydi"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ne dersin, o yalanlayıp yuz cevirdiyse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki ALLAH herseyi gormektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Dogrusu, buna son vermezse, yakalarız perceminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı ve gunahkar perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman haydi cagırsın kurultayını"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri cagıracagız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Asla, ona uyma; secde et ve yaklas"
        }
    ]
}