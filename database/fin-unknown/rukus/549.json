{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Mitä ajattelet miehestä, joka sanoo tulevaa tuomiota valheeksi"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Hän kohtelee orpoa karkeasti"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "eikä kehoita ruokkimaan köyhiä"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Voi niitä rukoilevia"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "jotka eivät sen enempää rukouksista huolehdi"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "jotka hyvää tekevät vain näön vuoksi"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "ja kitsaasti jättävät almut antamatta"
        }
    ]
}