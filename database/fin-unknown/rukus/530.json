{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Oletko kuullut sanoman musertavasta tapahtumasta"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Sinä päivänä toisten kasvot nöyrtyvät"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "väsyen ja nääntyen"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "he käyvät polttavaan tuleen"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "ja juovat kiehuvasta lähteestä"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "saamatta muuta ruokaa kuin ohdakkeista"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "joka ei lihota eikä vie nälkää"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Samana päivänä toisten kasvot loistavat"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "ja he ovat tyytyväiset ponnisteluihinsa"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "kun saapuvat ylhäisiin puutarhoihin"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "joissa eivät kuule turhuuden sanoja"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Siellä on pulppuavia lähteitä"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "siellä on korkeita valtaistuimia"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "täysiä maljoja"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "pieluksia pitkin rivein"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "ja levitettyjä mattoja"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Eivätkö he näe, kuinka pilvet on luotu"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "kuinka taivas on kaartunut korkeaksi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "kuinka vuoret on pystytetty"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "ja kuinka maa on avaraksi levitetty"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Jatka siis varoituksiasi, sinä olet juuri varoittaja"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "etkä ole heidän kaitsijansa"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Mutta sitä, joka kääntää selkänsä ja jää epäuskoonsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Jumala kurittaa suurella kärsimyksellä"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "totisesti he palaavat Meidän tykömme"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "ja Meille on heidän tili tehtävä"
        }
    ]
}