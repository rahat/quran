{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kun aurinko menee umpeen"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "kun tähdet sammuvat"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "kun vuoret järkkyvät"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kun kantavat kameelit hylätään"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kun pedot peloitetaan muille tienoille"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kun meret kuohuvat yli äyräittensä"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "kun sielut ja ruumiit jälleen yhtyvät"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "ja kun elävänä haudatulta naiselta kysytään"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "minkä synnin vuoksi hänet surmattiin"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "kun kirjoitukset avataan"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "kun taivaan kansi pyyhkäistään pois"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "kun helvetin tuli viritetään"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ja kun paratiisi lähestyy"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "silloin saa jokainen sielu tietää, mitä se on itselleen valmistanut"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Vannon kautta tähtien"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "jotka kulkevat ratojaan ja katoavat"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "kautta saapuvan yön"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ja valkenevan aamun"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "»Tämä on totisesti jalon sananjulistajan sanoma"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "sellaisen, jonka valta tulee voiman Herralta"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "jota on toteltava ja joka ei luottamusta petä"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Ei teidän heimolaisenne (profeetta) houraile"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Totisesti hän on nähnyt enkeli Gabrielin kirkkaalla taivaanrannalla"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "eikä hän ole kitsas näkymättömien asiain salaaja"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "ei tämä myöskään ole karkoitetun paholaisen ennustelua"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Mitä kohti siis kuljette"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Tämä ei ole muuta kuin varoitus maailman kansoille"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "jokaiselle teistä, joka tahtoo pysytellä oikealla tiellä"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Mutta ette te itse tahdo, ellei Jumala, maailmojen Herra,sitä tahdo.»"
        }
    ]
}