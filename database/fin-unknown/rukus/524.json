{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kun taivas rikki repeytyy"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "kun tähdet hajalle pirstoutuvat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kun virrat tulvivat vuolaina"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "ja haudat avautuvat"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "saa jokainen sielu tietää, mitä on tehnyt ja mitä laiminlyönyt"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Oi, ihminen, mikä on vietellyt sinut jaloa Herraasi vastaan"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "joka on luonut sinut, tehnyt sinut täydelliseksi ja sopusuhtaiseksi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Haluamaansa muotoon Hän on sinut valanut"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Voi, te sanotte tuomiota valheeksi"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "mutta totisesti on yläpuolellanne vartijoita"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "jaloja kirjoihin merkitsijöitä"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "jotka tuntevat tekonne"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Totisesti saavat hurskaat osakseen taivaan autuuden"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "ja totisesti joutuvat jumalattomat helvetin tuleen"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "he joutuvat sinne tuomion päivänä"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "eivätkä he voi sitä mitenkään välttää"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Käsitätkö, mikä Tuomion päivä on"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Vieläkin: käsitätkö, mikä Tuomion päivä on"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Se on päivä, jona yksikään sielu ei mahda mitään toisen hyväksi. Herran on kaikki valta sinä päivänä"
        }
    ]
}