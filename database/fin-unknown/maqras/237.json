{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ylistä Herrasi, Korkeimman, nimeä"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Hänen, joka luo ja tekee täydelliseksi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "joka määrää ja ohjaa"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "joka kasvattaa viheriän laidunruohon"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ja kuivattaa sen jälleen tomun harmaaksi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Me annamme sinun julkilukea (Koraania), etkä ole mitään unohtava"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "paitsi mitä Jumala tahtoo: totisesti Hän tietää, mitä ilmaistaan ja mikä pidetään salassa"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Tahdomme tasoittaa sinun lähetystiesi"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Käy siis eteenpäin varoittaen, totisesti koituu varoituksesta hyvää"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "se, joka (Jumalaa) pelkää, ottaa siitä vaarin"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "mutta viheliäinen karttaa sitä"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "hän joutuu ankarimpaan tuleen"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "jossa hän ei elä eikä kuole"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Mutta onnellinen se, joka tekee parannuksen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ylistää Herransa nimeä ja rukoilee"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Mutta te pidätte parempana tämän maailman elämää"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "vaikka tuleva elämä on parempi ja kestävämpi"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Näin on totisesti vanhimmissa kirjoituksissa"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Aabrahamin ja Mooseksen kirjoissa"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Oletko kuullut sanoman musertavasta tapahtumasta"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Sinä päivänä toisten kasvot nöyrtyvät"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "väsyen ja nääntyen"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "he käyvät polttavaan tuleen"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "ja juovat kiehuvasta lähteestä"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "saamatta muuta ruokaa kuin ohdakkeista"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "joka ei lihota eikä vie nälkää"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Samana päivänä toisten kasvot loistavat"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "ja he ovat tyytyväiset ponnisteluihinsa"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "kun saapuvat ylhäisiin puutarhoihin"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "joissa eivät kuule turhuuden sanoja"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Siellä on pulppuavia lähteitä"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "siellä on korkeita valtaistuimia"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "täysiä maljoja"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "pieluksia pitkin rivein"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "ja levitettyjä mattoja"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Eivätkö he näe, kuinka pilvet on luotu"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "kuinka taivas on kaartunut korkeaksi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "kuinka vuoret on pystytetty"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "ja kuinka maa on avaraksi levitetty"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Jatka siis varoituksiasi, sinä olet juuri varoittaja"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "etkä ole heidän kaitsijansa"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Mutta sitä, joka kääntää selkänsä ja jää epäuskoonsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Jumala kurittaa suurella kärsimyksellä"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "totisesti he palaavat Meidän tykömme"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "ja Meille on heidän tili tehtävä"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Kautta päivänkoiton"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "ja kymmenen yön"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "kautta (juhlapäivien) luvun ja epäluvun"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "kautta yön, jolloin lähdetään (kotimatkalle)"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Eikö tässä kaikessa ole minkä nimeen vannoa, jos kuka sen tajuaa"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Etkö ole miettinyt sitä, mitä Herrasi teki Aadille"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "ja Aramin heimolle, jonka rakennuksia tukivat ylväät pilarit"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "sellaiset, joiden vertaisia ei rakennettu muissa kaupungeissa"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "(ja mitä tehtiin) Tamuudin kansalle, joka laaksossaan hakkasi asumuksensa suunnattomiin kallioihin"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "ja faraolle, sotajoukkojen valtiaalle"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "noille kaikille,jotka harjoittivat irstaisuutta kaupungeissaan"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "ja saivat aikaan paljon pahaa"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Sentähden Herrasi lähetti heille kurituksen"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "totisesti Herrasi seuraa valppaasti teidänkin menoanne"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Kun ihmisen Herra koettelee häntä antamalla hänelle kunniaa ja osoittamalla hänelle hyvyyttä, niin hän sanoo: »Herra pitää minut kunniassa.»"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Mutta kun Hän koettelee häntä toisin, niukentaen hänen elatustaan, silloin hän sanoo: »Herra halveksii minua.»"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Ei, te ette pidä orpoa missään arvossa"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "ettekä kehoita toisianne ruokkimaan köyhiä"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "vaan te syötte olemattomiin kaikki heidän perintönsä ettekä mistään pidä väliä ahmiessanne"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "ja te rakastatte ylellisyyttä koko sydämestänne"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ei, kun tärähdykset panevat maan luhistumaan"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "kun Herra ilmestyy enkeliparvien seuraamana"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "ja paljastaa helvetin, sinä päivänä ihminen noudattaisi kehoitusta, mutta miksi hyödyksi on hänelle totteleminen enää"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Hän sanoo: »Voi, jospa olisin huolehtinut tulevasta elämästäni!»"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Mutta tuona päivänä ei kukaan rankaise niinkuin Hän"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "ei kukaan sido niinkuin Hän"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Sinä levon löytänyt sielu"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "palaa Herrasi luo saadaksesi Hänestä lohtusi ja ollaksesi Hänelle otollinen"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "astu siis Minun palvelijoitteni joukkoon"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Niin, astu autuuden tarhaan"
        }
    ]
}