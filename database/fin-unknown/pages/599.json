    "pages": [
        {
            "chapter": 98,
            "verse": 8,
            "text": "Heidän palkkansa heidän Herransa luona ovat ikiautuuden puutarhat, joita virrat vilvoittavat ja joissa he saavat asua ikuisesti. Heillä on Jumalan mielisuosio, ja heidän onnensa on Jumalassa. Tämä on jokaista varten, joka pelkää Herraansa"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Kun maa järkkyy omasta järinästään"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "kun se purkaa esiin kuormansa"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "ja kun ihminen kysyy: »Mikä sitä vaivaa?»"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "sinä päivänä on se sanova sanomansa"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "kun Herrasi on antanut siihen käskyn"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "sinä päivänä astuvat (kuolleet) ihmiset esiin erilaisissa ryhmissä näkemään tekojaan"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Silloin se, joka on tehnyt hyvää hiukkasenkin verran, on sen näkevä"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "ja se, joka on tehnyt pahaa hiukkasenkin verran, saa sen havaita"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Kautta korskuvien sotaratsujen"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "joiden kavioniskuista säkenöi tulta"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "jotka riuhtoutuvat hyökkäykseen aamulla"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "nostattavat tomupilven ilmaan"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "ja syöksyvät sotalaumojen joukkoon"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "totisesti, ihminen on kiittämätön Herraansa kohtaan"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "hänen on itsensä myönnettävä se"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Miten ahnaasti hän himoitseekaan maallista tavaraa"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Eikö hän tiedä, että tulee hetki, jolloin kaikki haudoista herätetään"
        }
    ]
