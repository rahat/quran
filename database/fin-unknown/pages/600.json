    "pages": [
        {
            "chapter": 100,
            "verse": 10,
            "text": "jolloin päivänvaloon tulee kaikki, mikä oli poven kätkössä"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Sinä päivänä heidän Herransa totisesti tuomitsee heidät tietonsa mukaan"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Vyöryvä tuho"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Miten hirveä on vyöryvä tuho"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Ymmärrätkö, kuinka kauhea on vyöryvä tuho"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Päivä, jolloin ihmiset ovat kuin hajoitettu sääksien parvi"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "ja vuoret kuin keritty villa"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Sen osana, jonka hyvien tekojen mitta on suuri"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "on elämä täynnä tyydytystä"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "mutta toisin käy sen, jonka hyvät teot vaa'assa keveiksi havaitaan"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "hänen asumuksensa on oleva horna"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Tiedätkö, mikä horna on"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Se on polttava tuli"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Rikkauksien kartuttaminen vieroittaa mielenne (uskosta)"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "aina siihen saakka, kunnes eteenne avautuu hauta"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Totisesti saatte sen nähdä"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Ja vieläkin kerran te saatte sen nähdä"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Jospa olisitte sen varmuudella tietäneet"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "olisitte ilmielävästi nähneet helvetin"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Vielä kerran, totisesti saatte nähdä sen omin silmin"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Silloin, tuona päivänä, teiltä toden totta vaaditaan (aikanaan) annettuja almuja"
        }
