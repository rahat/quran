{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Kun maa järkkyy omasta järinästään"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "kun se purkaa esiin kuormansa"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "ja kun ihminen kysyy: »Mikä sitä vaivaa?»"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "sinä päivänä on se sanova sanomansa"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "kun Herrasi on antanut siihen käskyn"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "sinä päivänä astuvat (kuolleet) ihmiset esiin erilaisissa ryhmissä näkemään tekojaan"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Silloin se, joka on tehnyt hyvää hiukkasenkin verran, on sen näkevä"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "ja se, joka on tehnyt pahaa hiukkasenkin verran, saa sen havaita"
        }
    ]
}