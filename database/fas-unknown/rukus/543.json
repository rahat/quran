{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "فرو كوبنده"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چیست (آن) فرو كوبنده؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه دانی که (آن) فرو کوبنده چیست؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزی که مردم مانند پروانه های پراگنده خواهند بود"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و گوهها مانند پشم رنگین حلاجی شده خواهد بود"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "پس اما هرکس که (در آن روز) کفۀ میزانش سنگین باشد"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "در یک زندگی خشنود (وپسندیده ای) خواهد بود"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما هرکس که کفۀ میزانش سبک باشد"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "پس (مسکن و) پناهگاهش هاویه است"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو جه دانی که آن (هاویه) چیست؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشی سوزان (وشعله ور) است"
        }
    ]
}