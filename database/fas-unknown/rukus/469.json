{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "هنگامی که واقعه ی قیامت واقع شود"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "که در واقع شدنش هیچ دروغی نیست"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "(گروهی را) خوار کننده, (وگروهی را) برافرازنده است"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "هنگامی که زمین بشدّت بلرزد"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وکوهها (درهم کوبیده و) متلاشی شود"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "پس چون غبار پراکنده گردد"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وشما سه گروه (تقسیم) شوید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "پس (گروه نخست سعاد تمندان) دست راست, (سعاد تمندان) دست راست چه حال دارند؟"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و (گروه دیگر شقاوتمندان) دست چپ, (شقاوتمندان) دست چپ چه حال دارند؟"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و (سومین گروه) پیشگامان پیشرو"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "آنها مقربان هستند"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در با غهای پر نعمت (بهشت جای دارند)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروهی از پیشینیان"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "واندکی از آیندگان هستند"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهایی مرصّع"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "رو به روی هم بر آن تکیه زده اند"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "نو جوانانی جاودان پیوسته بر گردشان می چرخند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با قدحها وکوزه ها و جامهایی از شرابی که (در جویها) جاری است"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(شرابی) که از آن نه سر درد گیرند ونه بیهوش شوند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و هر میوه ای که خود انتخاب کنند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و (نیز) گوشت پرنده (از هر نوعی) که میل داشته باشند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و(همسرانی از) حوریان سیه چشم (دارند)"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "همچون مروارید پنهان در صدف"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "(اینها) پاداشی است در برابر آنچه که انجام می دادند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آن (باغها ی بهشتی) نه سخن لغو وبیهوده ای می شنوند ونه گفتار گناه آلود"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "تنها یک سخن (می شنوند) سلام است, سلام"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "واصحاب دست راست (سعادتمند) چه (وضع و) حالی دارند اصحاب دست راست (سعادتمند)؟؟"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در (میان) درختان «سدر» (= کنار) بی خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و درختان موز پربار تو برتو"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وسایه ای گسترده"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و(در کنار) آبی جاری (وروان)"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "ومیوه ای فراوان"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "نه پایان پذیرد ونه (کسی را از آن) باز دارند"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وبسترهای برافراشته شده (وهمسرانی گرانقدر)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "بی گمان ما آنها را به آفرینش نوینی آفریده ایم"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "وآنها را دو شیزه قرار داده ایم"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "شوهر دوستان هم سن وسال"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "(همه ی اینها) برای اصحاب دست راست (سعادتمند) است"
        }
    ]
}