{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "چهره درهم کشید, وروی بر گردانید"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "از این که (عبد الله بن ام مکتوم) نابینا به نزدش آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و (ای پیامبر) چه می دانی شاید که او پاک می شد"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا پندگیرد, واین پند به او نفع می داد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن کس که مجد نیازی نمود"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو به او روی من آوری"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "در حالی که اگر او خود را (از کفر) پاک نسازد, چیزی بر تو نیست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "اما کسی شتابان به مراغ تو می آید"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "و او (از خدا) می ترسد"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او غافل می شوی (وبه ار تو جه نمی کنی؟)"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "هرگز چنین نیست, بی گمان این (سوره) تذکر ویاد آوری است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هرکس بخواهد از آن پند گیرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در صحیفه های پر ارزشی (ثبت) است"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلند پایه وپاکیزه"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست (فرشتگان =) سفیران (وحی است)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار ونیکو کار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر (این) انسان, چقدر نا سپاس است؟"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(خداوند) او را از چه چیز آفریده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "او را از نطفه ای (نا چیز) آفریده است, آنگاه او را موزون ساخت"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه را برای او آسان نمود"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "آنگاه (بعد از پایان عمر) او را میراند, پس او را در قبر (پنهان) کرد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هرگاه که بخواهد او را (زیاده می کند و از قبر) بر می انگیزد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "هرگز چنین نیست, (که او می پندارد) او هنوز آنچه را که (خدا) فرمان داده, به جای نیاورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس انسان باید به غذای خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "بی گمان ما آب فراوان (از آسمان) فروریختیم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمین را به نیکی شگافتیم"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "آنگاه در آن دانه (های فراون) رویاندیم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "وانگور وسبزی (بسیار)"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زیتون ونخل"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "وبا غهایی (ابنوه و) پردرخت"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و(انواع) میوه و علوفه (پدید آوردیم)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(همۀ اینها) برای بهره گیری شما وچهار یایانتان است"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس هنگامی که (آن) صدای مهیب (قیامت) فرا رسد"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی که انسان از برادرش می گریزد"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "واز ما درش و از پدرش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "واز زنش وفرزندانش (نیز می گریزد)"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز هرکس را کاری است که اورا به خود مشغولش دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "چهره هایی در آن روز گشاده وروشن است"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان وشاد است"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "وچهره هایی در آن روز غبار آلود است"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "سیاهی (وتاریکی) آنهارا پوشانده است"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اینان همان کافران فاجرند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "هنگامی که خورشید درهم پیچیده شود"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "وهنگامی که ستارگان بی نور شوند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "وهنگامی که کوهها به حرکت درآنید"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "وهنگامی که ماده شتران باردار رها شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "وهنگامی که جانوران وحشی گرده آورده شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "وهگامی که دریاها (جوشان و) بر افروخته شود"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "وهنگامی که روحها (باتنها) قرین شوند"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "وهنگامی که از دختر زنده به گورشده پرسیده شود"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "به کدامین گناه کشته شده است؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "وهنگامی که نامه های (اعمال) گشوده شود"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "وهنگامی که پرده از روی آسمان برگرفته شود"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "وهنگامی که دوزخ افروخته (وشعله ور) گردد"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "وهنگامی که بهشت نزدیک آورده شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(در آن هنگام) هرکس خواهد دانست چه چیزی را (برای آفرت خود) حاضر (وآماده) کرده است"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند به شارگانی که باز می گردند"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(شتابان) حرکت می کنند (واز نظر) پنهان می شوند"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "وسوگند به شب, هنگامی که (تاریکی اش کاسته نودو) پشت کند"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "وسوگند به صبح, هنگامی که بد مد"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "بی گمان این (قرآن) سخن فرستادۀ بزدگوار (= جبرئیل) است"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "که (مقتدر و) نیرومند است, ونزد (خداوند) صاحب عرش مقام ومنزلت والایی دارد"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(در آسمانها) مودر اطاعت (فرشتکان) وامین (وحی) است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و (ای مردم) همنشین شما (محمد) دیوانه نیست"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "وبه راستی او (= جبرئیل) را در افق روشن دیده است"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او بر (آنچه از طریق) غیب (به او وحی شده) بخیل نیست"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و این (قرآن) گفتۀ شیطان رانده شده نیست"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس به کجا می روید؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "این (قرآن) چیزی جز پند واندرز برای جهانیان نیست"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "برای کسی از شما که بخواهد راه راست درپشین گیرد"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "وشما نمی خواهید مگر آنکه پروردگار جهانیان بخواهد"
        }
    ]
}