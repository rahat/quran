{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "wal-safati saffan"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "fal-zajirati zajran"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "fal-taliyati dhik'ran"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "inna ilahakum lawahidun"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "rabbu l-samawati wal-ardi wama baynahuma warabbu l-mashariqi"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "inna zayyanna l-samaa l-dun'ya bizinatin l-kawakibi"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "wahif'zan min kulli shaytanin maridin"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "la yassammaʿuna ila l-mala-i l-aʿla wayuq'dhafuna min kulli janibin"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "duhuran walahum ʿadhabun wasibun"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "illa man khatifa l-khatfata fa-atbaʿahu shihabun thaqibun"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "fa-is'taftihim ahum ashaddu khalqan am man khalaqna inna khalaqnahum min tinin lazibin"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "bal ʿajib'ta wayaskharuna"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "wa-idha dhukkiru la yadhkuruna"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "wa-idha ra-aw ayatan yastaskhiruna"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "waqalu in hadha illa sih'run mubinun"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "a-idha mit'na wakunna turaban waʿizaman a-inna lamabʿuthuna"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "awaabauna l-awaluna"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "qul naʿam wa-antum dakhiruna"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "fa-innama hiya zajratun wahidatun fa-idha hum yanzuruna"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "waqalu yawaylana hadha yawmu l-dini"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "hadha yawmu l-fasli alladhi kuntum bihi tukadhibuna"
        }
    ]
}