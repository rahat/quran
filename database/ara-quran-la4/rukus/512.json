{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "la uq'simu biyawmi l-qiyamati"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "wala uq'simu bil-nafsi l-lawamati"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "ayahsabu l-insanu allan najmaʿa ʿizamahu"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "bala qadirina ʿala an nusawwiya bananahu"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "bal yuridu l-insanu liyafjura amamahu"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "yasalu ayyana yawmu l-qiyamati"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "fa-idha bariqa l-basaru"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "wakhasafa l-qamaru"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "wajumiʿa l-shamsu wal-qamaru"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "yaqulu l-insanu yawma-idhin ayna l-mafaru"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "kalla la wazara"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "ila rabbika yawma-idhin l-mus'taqaru"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "yunabba-u l-insanu yawma-idhin bima qaddama wa-akhara"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "bali l-insanu ʿala nafsihi basiratun"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "walaw alqa maʿadhirahu"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "la tuharrik bihi lisanaka litaʿjala bihi"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "inna ʿalayna jamʿahu waqur'anahu"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "fa-idha qaranahu fa-ittabiʿ qur'anahu"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "thumma inna ʿalayna bayanahu"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "kalla bal tuhibbuna l-ʿajilata"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "watadharuna l-akhirata"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "wujuhun yawma-idhin nadiratun"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "ila rabbiha naziratun"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "wawujuhun yawma-idhin basiratun"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "tazunnu an yuf'ʿala biha faqiratun"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "kalla idha balaghati l-taraqiya"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "waqila man raqin"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "wazanna annahu l-firaqu"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "wal-tafati l-saqu bil-saqi"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "ila rabbika yawma-idhin l-masaqu"
        }
    ]
