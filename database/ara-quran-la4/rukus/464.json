{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "kadhabat thamudu bil-nudhuri"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "faqalu abasharan minna wahidan nattabiʿuhu inna idhan lafi dalalin wasuʿurin"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "a-ul'qiya l-dhik'ru ʿalayhi min baynina bal huwa kadhabun ashirun"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "sayaʿlamuna ghadan mani l-kadhabu l-ashiru"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "inna mur'silu l-naqati fit'natan lahum fa-ir'taqib'hum wa-is'tabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "wanabbi'hum anna l-maa qis'matun baynahum kullu shir'bin muh'tadarun"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "fanadaw sahibahum fataʿata faʿaqara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "fakayfa kana ʿadhabi wanudhuri"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "inna arsalna ʿalayhim sayhatan wahidatan fakanu kahashimi l-muh'taziri"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "walaqad yassarna l-qur'ana lildhik'ri fahal min muddakirin"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "kadhabat qawmu lutin bil-nudhuri"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "inna arsalna ʿalayhim hasiban illa ala lutin najjaynahum bisaharin"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "niʿ'matan min ʿindina kadhalika najzi man shakara"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "walaqad andharahum batshatana fatamaraw bil-nudhuri"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "walaqad rawaduhu ʿan dayfihi fatamasna aʿyunahum fadhuqu ʿadhabi wanudhuri"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "walaqad sabbahahum buk'ratan ʿadhabun mus'taqirrun"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "fadhuqu ʿadhabi wanudhuri"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "walaqad yassarna l-qur'ana lildhik'ri fahal min muddakirin"
        }
