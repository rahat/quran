{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "sa-ala sailun biʿadhabin waqiʿin"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "lil'kafirina laysa lahu dafiʿun"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "mina l-lahi dhi l-maʿariji"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "taʿruju l-malaikatu wal-ruhu ilayhi fi yawmin kana miq'daruhu khamsina alfa sanatin"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "fa-is'bir sabran jamilan"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "innahum yarawnahu baʿidan"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "wanarahu qariban"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "yawma takunu l-samau kal-muh'li"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "watakunu l-jibalu kal-ʿih'ni"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "wala yasalu hamimun hamiman"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "yubassarunahum yawaddu l-muj'rimu law yaftadi min ʿadhabi yawmi-idhin bibanihi"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "wasahibatihi wa-akhihi"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "wafasilatihi allati tu'wihi"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "waman fi l-ardi jamiʿan thumma yunjihi"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "kalla innaha laza"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "nazzaʿatan lilshawa"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "tadʿu man adbara watawalla"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "wajamaʿa fa-awʿa"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "inna l-insana khuliqa haluʿan"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "idha massahu l-sharu jazuʿan"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "wa-idha massahu l-khayru manuʿan"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "illa l-musalina"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "alladhina hum ʿala salatihim daimuna"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "wa-alladhina fi amwalihim haqqun maʿlumun"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "lilssaili wal-mahrumi"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "wa-alladhina yusaddiquna biyawmi l-dini"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "wa-alladhina hum min ʿadhabi rabbihim mush'fiquna"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "inna ʿadhaba rabbihim ghayru mamunin"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "wa-alladhina hum lifurujihim hafizuna"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "illa ʿala azwajihim aw ma malakat aymanuhum fa-innahum ghayru malumina"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "famani ib'tagha waraa dhalika fa-ulaika humu l-ʿaduna"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "wa-alladhina hum li-amanatihim waʿahdihim raʿuna"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "wa-alladhina hum bishahadatihim qaimuna"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "wa-alladhina hum ʿala salatihim yuhafizuna"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "ulaika fi jannatin muk'ramuna"
        }
    ]
}