{
    "pages": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "wal-najmi idha hawa"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "ma dalla sahibukum wama ghawa"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "wama yantiqu ʿani l-hawa"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "in huwa illa wahyun yuha"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "ʿallamahu shadidu l-quwa"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "dhu mirratin fa-is'tawa"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "wahuwa bil-ufuqi l-aʿla"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "thumma dana fatadalla"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "fakana qaba qawsayni aw adna"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "fa-awha ila ʿabdihi ma awha"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "ma kadhaba l-fuadu ma raa"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "afatumarunahu ʿala ma yara"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "walaqad raahu nazlatan ukh'ra"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "ʿinda sid'rati l-muntaha"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "ʿindaha jannatu l-mawa"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "idh yaghsha l-sid'rata ma yaghsha"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "ma zagha l-basaru wama tagha"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "laqad raa min ayati rabbihi l-kub'ra"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "afara-aytumu l-lata wal-ʿuza"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "wamanata l-thalithata l-ukh'ra"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "alakumu l-dhakaru walahu l-untha"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "til'ka idhan qis'matun diza"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "in hiya illa asmaon sammaytumuha antum waabaukum ma anzala l-lahu biha min sul'tanin in yattabiʿuna illa l-zana wama tahwa l-anfusu walaqad jaahum min rabbihimu l-huda"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "am lil'insani ma tamanna"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "falillahi l-akhiratu wal-ula"
        },
        {
            "chapter": 53,
            "verse": 26,
            "text": "wakam min malakin fi l-samawati la tugh'ni shafaʿatuhum shayan illa min baʿdi an yadhana l-lahu liman yashau wayarda"
        }
    ]
}