{
    "pages": [
        {
            "chapter": 15,
            "verse": 52,
            "text": "idh dakhalu ʿalayhi faqalu salaman qala inna minkum wajiluna"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "qalu la tawjal inna nubashiruka bighulamin ʿalimin"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "qala abashartumuni ʿala an massaniya l-kibaru fabima tubashiruna"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "qalu basharnaka bil-haqi fala takun mina l-qanitina"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "qala waman yaqnatu min rahmati rabbihi illa l-daluna"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "qala fama khatbukum ayyuha l-mur'saluna"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "qalu inna ur'sil'na ila qawmin muj'rimina"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "illa ala lutin inna lamunajjuhum ajmaʿina"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "illa im'ra-atahu qaddarna innaha lamina l-ghabirina"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "falamma jaa ala lutin l-mur'saluna"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "qala innakum qawmun munkaruna"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "qalu bal ji'naka bima kanu fihi yamtaruna"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "wa-ataynaka bil-haqi wa-inna lasadiquna"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "fa-asri bi-ahlika biqit'ʿin mina al-layli wa-ittabiʿ adbarahum wala yaltafit minkum ahadun wa-im'du haythu tu'maruna"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "waqadayna ilayhi dhalika l-amra anna dabira haulai maqtuʿun mus'bihina"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "wajaa ahlu l-madinati yastabshiruna"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "qala inna haulai dayfi fala tafdahuni"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "wa-ittaqu l-laha wala tukh'zuni"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "qalu awalam nanhaka ʿani l-ʿalamina"
        }
