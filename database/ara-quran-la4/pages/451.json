{
    "pages": [
        {
            "chapter": 37,
            "verse": 127,
            "text": "fakadhabuhu fa-innahum lamuh'daruna"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "illa ʿibada l-lahi l-mukh'lasina"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "watarakna ʿalayhi fi l-akhirina"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "salamun ʿala il yasina"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "inna kadhalika najzi l-muh'sinina"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "innahu min ʿibadina l-mu'minina"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "wa-inna lutan lamina l-mur'salina"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "idh najjaynahu wa-ahlahu ajmaʿina"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "illa ʿajuzan fi l-ghabirina"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "thumma dammarna l-akharina"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "wa-innakum latamurruna ʿalayhim mus'bihina"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "wabi-al-layli afala taʿqiluna"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "wa-inna yunusa lamina l-mur'salina"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "idh abaqa ila l-ful'ki l-mashhuni"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "fasahama fakana mina l-mud'hadina"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "fal-taqamahu l-hutu wahuwa mulimun"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "falawla annahu kana mina l-musabihina"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "lalabitha fi batnihi ila yawmi yub'ʿathuna"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "fanabadhnahu bil-ʿarai wahuwa saqimun"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "wa-anbatna ʿalayhi shajaratan min yaqtinin"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "wa-arsalnahu ila mi-ati alfin aw yaziduna"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "faamanu famattaʿnahum ila hinin"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "fa-is'taftihim alirabbika l-banatu walahumu l-banuna"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "am khalaqna l-malaikata inathan wahum shahiduna"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "ala innahum min if'kihim layaquluna"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "walada l-lahu wa-innahum lakadhibuna"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "astafa l-banati ʿala l-banina"
        }
