{
    "pages": [
        {
            "chapter": 37,
            "verse": 77,
            "text": "wajaʿalna dhurriyyatahu humu l-baqina"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "watarakna ʿalayhi fi l-akhirina"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "salamun ʿala nuhin fi l-ʿalamina"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "inna kadhalika najzi l-muh'sinina"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "innahu min ʿibadina l-mu'minina"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "thumma aghraqna l-akharina"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "wa-inna min shiʿatihi la-ib'rahima"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "idh jaa rabbahu biqalbin salimin"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "idh qala li-abihi waqawmihi madha taʿbuduna"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "a-if'kan alihatan duna l-lahi turiduna"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "fama zannukum birabbi l-ʿalamina"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "fanazara nazratan fi l-nujumi"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "faqala inni saqimun"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "fatawallaw ʿanhu mud'birina"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "faragha ila alihatihim faqala ala takuluna"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "ma lakum la tantiquna"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "faragha ʿalayhim darban bil-yamini"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "fa-aqbalu ilayhi yaziffuna"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "qala ataʿbuduna ma tanhituna"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "wal-lahu khalaqakum wama taʿmaluna"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "qalu ib'nu lahu bun'yanan fa-alquhu fi l-jahimi"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "fa-aradu bihi kaydan fajaʿalnahumu l-asfalina"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "waqala inni dhahibun ila rabbi sayahdini"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "rabbi hab li mina l-salihina"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "fabasharnahu bighulamin halimin"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "falamma balagha maʿahu l-saʿya qala yabunayya inni ara fi l-manami anni adhbahuka fa-unzur madha tara qala yaabati if'ʿal ma tu'maru satajiduni in shaa l-lahu mina l-sabirina"
        }
    ]
}