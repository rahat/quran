{
    "pages": [
        {
            "chapter": 51,
            "verse": 7,
            "text": "wal-samai dhati l-hubuki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "innakum lafi qawlin mukh'talifin"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "yu'faku ʿanhu man ufika"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "qutila l-kharasuna"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "alladhina hum fi ghamratin sahuna"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "yasaluna ayyana yawmu l-dini"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "yawma hum ʿala l-nari yuf'tanuna"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "dhuqu fit'natakum hadha alladhi kuntum bihi tastaʿjiluna"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "inna l-mutaqina fi jannatin waʿuyunin"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "akhidhina ma atahum rabbuhum innahum kanu qabla dhalika muh'sinina"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "kanu qalilan mina al-layli ma yahjaʿuna"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "wabil-ashari hum yastaghfiruna"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "wafi amwalihim haqqun lilssaili wal-mahrumi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "wafi l-ardi ayatun lil'muqinina"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "wafi anfusikum afala tub'siruna"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "wafi l-samai riz'qukum wama tuʿaduna"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "fawarabbi l-samai wal-ardi innahu lahaqqun mith'la ma annakum tantiquna"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "hal ataka hadithu dayfi ib'rahima l-muk'ramina"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "idh dakhalu ʿalayhi faqalu salaman qala salamun qawmun munkaruna"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "faragha ila ahlihi fajaa biʿij'lin saminin"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "faqarrabahu ilayhim qala ala takuluna"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "fa-awjasa min'hum khifatan qalu la takhaf wabasharuhu bighulamin ʿalimin"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "fa-aqbalati im'ra-atuhu fi sarratin fasakkat wajhaha waqalat ʿajuzun ʿaqimun"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "qalu kadhaliki qala rabbuki innahu huwa l-hakimu l-ʿalimu"
        }
    ]
