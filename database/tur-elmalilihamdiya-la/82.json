{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok catladıgı vakit"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar dokuldugu vakit"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler yarılıp akıtıldıgı vakit"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına getirildigi vakit"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi onunden gonderdigini ve neyi geri bıraktıgını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Ihsanı bol Rabb'ine karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yarattı, seni duzgun yapılı kılıp olculu bir bicim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni diledigi her hangi bir sekilde parcalardan olusturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır hayır, siz cezayı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa uzerinizde koruyucular var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, siz her ne yaparsanız bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Kuskusuz iyiler nimet icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gunu ona girecekler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar o cehennemin gozunden kacamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gununun ne oldugunu sen bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin nedir acaba o ceza gunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun, hic kimsenin baskası icin hicbir seye sahip olamadıgı gundur. O gun buyruk yalnız Allah'ındır"
        }
    ]
}