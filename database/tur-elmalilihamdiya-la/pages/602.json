{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys'in ilafı (guven ve barıs andlasmalarından faydalanmalarını saglamak) icin"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Kıs ve yaz seferlerinde (faydalandıkları andlasmaların) kadrini bilmis olmaları icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu Beyt (Kabe)nin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O, kendilerini aclıktan kurtararak beslemistir ve her tehlikeye karsı onlara emniyet vermistir"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste o, oksuzu iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya onayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay haline o namaz kılanların ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Kıldıkları namazın degerine aldırıs etmezler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Gosteris yaparlar onlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardımlıgı sakınırlar (zekatı vermezler)"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Muhakkak biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Oyleyse Rabb'in icin namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Muhakkak ki sonu kesik olan, sana bugzedendir"
        }
    ]
}