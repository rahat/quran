{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber) Yuzunu eksitti ve dondu"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine ama geldi, diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin, belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya ogut belleyecek de ogut ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama buna ihtiyac hissetmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yoneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun temizlenmemesinden sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama sana can atarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allah'tan korkarak gelmisken"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır hayır, sakın. Cunku o Kur'an bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen onu dusunur"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, degerli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yuksek tutulan tertemiz sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Yazıcıların ellerindedir"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Degerli, iyi yazıcıların"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "O kahrolası insan, ne nankor sey"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "O yaratan onu hangi seyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan, onu yarattı da bicime koydu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolunu kolaylastırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurdu de kabre koydurdu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra diledigi vakit onu tekrar diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır hayır, dogrusu o, hic Allah'ın emrini tam yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de o insan yiyecegine baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz o suyu bol bol doktuk"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra topragı nasıl da yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu suretle orada ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzumler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinlikler, hurmalıklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Iri ve sık agaclı bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler, cayırlar bitirdik"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Siz ve hayvanlarınız faydalansın diye"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sagır eden o gurultu geldiginde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gun kisi kacar, kardesinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Esinden ve ogullarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "Onlardan her birinin o gun basından asan isi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Yuzler var ki, o gun parıl parıl"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Guler, sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yuzler de var ki, o gun tozlanmıs"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onları karanlık burumus"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste onlardır kafirler, haktan sapanlar"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes katlanıp duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar bulandıgında"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kıyılmaz mallar bırakıldıgında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar bir araya toplandıgında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateslendiginde (suları cekilip, volkanlar halinde ates puskurdugunde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eslestirildiginde (iyiler iyilerle, kotuler kotulerle bir araya toplandıgında)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri topraga gomulen kıza soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi gunahtan dolayı olduruldu?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri acıldıgında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok sıyrılıp acıldıgında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıstırıldıgında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklastırıldıgında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmis oldugunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Simdi yemin ederim o sinenlere (gunduzleri gozden kaybolan yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yuvasına gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yoneldigi an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendigi (agardıgı) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuskusuz o Kur'an, degerli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci gucludur, Ars'ın sahibinin yanında cok itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, guvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınızı cin carpmıs degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i acık ufukta gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında cimri de degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmus bir seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal boyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemler icin ogutten baska bir sey degildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Icinizden dogru gitmek isteyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}