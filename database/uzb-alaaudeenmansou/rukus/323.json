{
    "rukus": [
        {
            "chapter": 26,
            "verse": 141,
            "text": "Самуд (қавми) Пайғамбарларни ёлғончи қилди"
        },
        {
            "chapter": 26,
            "verse": 142,
            "text": "Ўшанда уларга биродарлари Солиҳ деди: «Қўрқмайсизларми"
        },
        {
            "chapter": 26,
            "verse": 143,
            "text": "Албатта, мен сизларга ишончли Пайғамбарман"
        },
        {
            "chapter": 26,
            "verse": 144,
            "text": "Бас, Аллоҳдан қўрқинглар ва менга итоат қилинглар"
        },
        {
            "chapter": 26,
            "verse": 145,
            "text": "Мен сизлардан бунинг учун ҳақ — ажр сўрамайман. Менинг ажрим фақатгина Роббул оламийн зиммасидадир"
        },
        {
            "chapter": 26,
            "verse": 146,
            "text": "Сиз бу жойдаги нарсаларда омон ҳолда тарк қилинасизми"
        },
        {
            "chapter": 26,
            "verse": 147,
            "text": "Боғ-роғларда, булоқларда"
        },
        {
            "chapter": 26,
            "verse": 148,
            "text": "Экинзорлару майин хурмозор ичларида-я"
        },
        {
            "chapter": 26,
            "verse": 149,
            "text": "Ва тоғлардан манманлик-ла уйлар йўнаверасизми"
        },
        {
            "chapter": 26,
            "verse": 150,
            "text": "Бас, Аллоҳдан қўрқинглар ва менга итоат қилинглар"
        },
        {
            "chapter": 26,
            "verse": 151,
            "text": "Ва ер юзида исрофчиларнинг ишига итоат қилманглар"
        },
        {
            "chapter": 26,
            "verse": 152,
            "text": "Ер юзида бузғунчилик қиладиган, ислоҳ этмайдиганларнинг»"
        },
        {
            "chapter": 26,
            "verse": 153,
            "text": "Улар: «Сен, албатта, сеҳрланганлардандирсан"
        },
        {
            "chapter": 26,
            "verse": 154,
            "text": "Сен бизга ўхшаган башардан бошқа ҳеч нарса эмассан. Агар ростгўйлардан бўлсанг, мўъжиза келтир», дедилар"
        },
        {
            "chapter": 26,
            "verse": 155,
            "text": "У: «Мана бу туя. Унга (бир кун) сув ичиш ва сизга маълум бир кун сув ичиш"
        },
        {
            "chapter": 26,
            "verse": 156,
            "text": "Ва унга ёмонлик етказманглар, унда, сизни улуғ куннинг азоби тутадир», деди"
        },
        {
            "chapter": 26,
            "verse": 157,
            "text": "Бас, у(туя)ни сўйдилару надомат чекувчига айландилар"
        },
        {
            "chapter": 26,
            "verse": 158,
            "text": "Бас, уларни азоб тутди. Албатта, бунда оят-белги бор. Лекин кўплари мўмин бўлмадилар"
        },
        {
            "chapter": 26,
            "verse": 159,
            "text": "Албатта, Роббинг Ўзи азийзу меҳрибондир"
        }
    ]
}