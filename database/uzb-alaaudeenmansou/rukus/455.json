{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Чанг тўзитувчи(шамол)лар билан қасам"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Юк кўтарувчи(булут)лар билан қасам"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Осон юрувчи(кема)лар билан қасам"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Иш тақсимловчи(фаришта)лар билан қасам"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Албатта, сизга ваъда қилинган нарса ростдир"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ва, албатта, қиёмат воқеъ бўлгувчидир"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Гўзал, мустаҳкам осмон билан қасам"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Албатта, сизларнинг гапларингиз ихтилофлидир"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "У(Қуръон)дан ким бурилса, (бутунлай) буриб қўйиладир"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Ёлғончиларга лаънат бўлсин"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Улар жаҳолатдаги ғофиллардир"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Улар: «Ҳисоб-китоб куни қачон», деб сўрарлар"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Бу кунда улар оловда азобланурлар"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "«Азобингизни татиб кўринг», сиз «Қачон бўладир», деб шошилган нарса — шу!» (дейилур)"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Албатта, тақводорлар жаннатлар ва булоқлардадир"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Роббилари берган нарсаларни олувчилардир. Чунки, улар бундан олдин эҳсон қилувчилардан бўлганлардир"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Улар кечалари оз ухлар эдилар"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Ва улар саҳарларда истиғфор айтар эдилар"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Ва молу мулкларида сўровчи ва бечораларнинг ҳаққи бордир"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Ва ерда чуқур ишонувчилар учун белгилар бор"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Ва ўзларингизда ҳам (белгилар) бор. Ёки кўрмаяпсизларми"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Ва осмонда ризқингиз ҳамда сизга ваъда қилинаётган нарса (бор)"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Осмону ернинг Роббиси ила қасамки, албатта, у (ваъда) мисоли сиз нутқ қилаётганингиздек ҳақиқатдир"
        }
    ]
}