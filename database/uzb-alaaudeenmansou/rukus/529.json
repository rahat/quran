{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Олий қадар бўлган Роббинг исмини поклаб ёд эт"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "У яратган ва мутаносиб қилган Зотдир"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "У, ўлчов билан қилган ва ҳидоятга бошлаган Зотдир"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "У, ўт-ўланни чиқарган Зотдир"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Бас, уни қорайган хашак қилган Зотдир"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Биз сенга (Қуръонни) қироат қилдирамиз, бас, сен уни эсдан чиқармассан"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Илло, Аллоҳ хоҳлаганини. Албатта, У ошкорни ҳам, махфий нарсаларни ҳам биладир"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ва сени осон йўлга муяссар қиламиз"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Бас, агар эслатиш манфаат берса, эслатгин"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Албатта, У зотдан қўрққан эсга оладир"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ва бадбахтгина ундан четда бўладир"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "У катта оловга кирадир"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Сўнгра, унинг ичида ўлмай ҳам, тирилмай ҳам қоладир"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Ҳақиқатан, ким пок бўлса, ютуқ топадир"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ва Робби исмини зикр қилса ва намоз ўқиса ҳамдир"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Балки, сизлар бу дунё ҳаётини устун қўясизлар"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ҳолбуки, охират яхшироқ ва боқийроқдир"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Албатта, бу аввалги саҳифаларда бордир"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Иброҳим ва Мусо саҳифаларидадир"
        }
    ]
}