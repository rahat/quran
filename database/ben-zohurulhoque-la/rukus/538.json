{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "tumi paro tomara prabhura name yini srsti karechena"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "srsti karechena manusake eka raktapinda theke."
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Paro! Ara tomara prabhu mahasam'manita"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "yini siksa diyechena kalamera sahayye"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "siksa diyechena manusake ya se janato'i na."
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Bastutah manusa niscaya'i simalanghana kare'i thake."
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Karana se nijeke sbayansamrd'dha dekhe."
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Niscaya tomara prabhura kache'i pratyabartana."
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Tumi ki take dekhecha ye barana kare"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "ekajana bandake yakhana se namaya pare"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "tumi ki laksya karecha -- se satpathe rayeche ki na"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "athaba dharmabhiruta abalanbanera nirdesa deya kina"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "tumi ki dekhecha -- se mithyaropa karache o phire yacche ki na"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "se ki jane na ye allah abasya'i dekhate pacchena"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Na, yadi se na thame tabe amara niscaya tene dharaba kapalera culera gocha"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "mithyacari papacari culera gocha"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "tahale se dakuka tara sangopangadera"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "amara'o sange sange dakabo durdharsa bahinike."
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Na, tumi tara ajna palana karo na, baram tumi sijada karo ebam nikatabarti ha'o."
        }
    ]
}