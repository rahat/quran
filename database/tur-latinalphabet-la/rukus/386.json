{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "Vessaffati saffa"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "Fezzacirati zecra"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "Fettaliyati zikra"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "Inne ilahekum le vahıd"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "Rabbus semavati vel erdı ve ma beynehuma ve rabbul mesarık"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "Inna zeyyennes semaed dunya bi zınetinil kevakib"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "Ve hıfzam min kulli seytanim marid"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "La yessemmeune ilel meleil a´la ve yukzefune min kulli canib"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "Duhurav ve lehum azabuv vasıb"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "Illa men hatfel hatfete fe etbeahu sihabun sakıb"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "Festeftihim ehum esddu halkan em men halakna inna halaknahum min tıynil lazib"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "Bel acibte ve yesharun"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "Ve iza zukkiru la yezkurun"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "Ve iza raev ayetey yesteshırun"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "Ve kalu in haza illa sıhrum mubın"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "E iza mitna ve kunna turabev ve ızamen e inna le meb´usun"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "E ve abaunel evvelun"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "Kul neam ve entum dahırun"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "Fe innema hiye zecratuv vahıdetun fe izahum yenzurun"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "Ve kalu ya veylena haza yevmud dın"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "Haza yevmul faslillezı kuntum bihı tukezzibun"
        }
    ]
}