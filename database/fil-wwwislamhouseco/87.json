{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Magluwalhati ka sa ngalan ng Panginoon mo, ang Pinakamataas"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "na lumikha saka humubog"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "na nagtakda saka nagpatnubay"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "na nagpalabas ng pastulan"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "saka gumawa Siya rito na yagit na nangingitim"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Magpapabigkas Kami sa iyo [ng Qur’ān] kaya hindi ka makalilimot"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "maliban sa niloob ni Allāh; tunay na Siya ay nakaaalam sa lantad at anumang nagkukubli"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "At magpapadali Kami sa iyo para sa pinakamadali"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Kaya magpaalaala ka kung mapakikinabangan ang paalaala"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Magsasaalaala ang sinumang natatakot [kay Allāh]"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "at umiiwas dito ang pinakamalumbay"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "na papasok sa Apoy na pinakamalaki"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Pagkatapos ay hindi siya mamamatay roon at hindi mabubuhay"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Nagtagumpay nga ang sinumang nagpakalinis [sa kasalanan]"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "at bumanggit sa pangalan ng Panginoon niya saka nagdasal"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Bagkus nagtangi kayo sa pangmundong buhay"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "samantalang ang Kabilang-buhay ay higit na mabuti at higit na nananatili"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Tunay na ito ay talagang nasa mga unang kalatas"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "sa mga kalatas nina Abraham at Moises"
        }
    ]
}