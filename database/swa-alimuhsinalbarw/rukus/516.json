{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Naapa kwa zinazo tumwa kwa upole"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Na zinazo vuma kwa kasi"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Na zikaeneza maeneo yote"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Na zinazo farikisha zikatawanya"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Na zinazo peleka mawaidha"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Kwa kuudhuru au kuonya"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Hakika mnayo ahidiwa bila ya shaka yatakuwa"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Wakati nyota zitakapo futwa"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Na mbingu zitakapo pasuliwa"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Na milima itakapo peperushwa"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Na Mitume watakapo wekewa wakati wao"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Kwa siku gani hiyo wamewekewa muda huo"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Kwa siku ya kupambanua"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Na nini kitakacho kujuulisha siku ya kupambanua ni nini"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Ole wao, siku hiyo hao wanao kanusha"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Kwani hatukuwaangamiza walio tangulia"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Kisha tukawafuatilizia walio fuatia"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Ndio kama hivi tuwatendavyo wakosefu"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Ole wao siku hiyo hao wanao kanusha"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Kwani hatukukuumbeni kwa maji ya kudharauliwa"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Kisha tukayaweka mahali pa utulivu madhubuti"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Mpaka muda maalumu"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Tukakadiria na Sisi ni wabora wa kukadiria"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Ole wao siku hiyo hao wanao kanusha"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Kwani hatukuifanya ardhi yenye kukusanya"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Walio hai na maiti"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Na ndani yake tukaweka milima mirefu yenye kuthibiti, na tunakunywesheni maji matamu"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Ole wao siku hiyo hao wanao kanusha"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Nendeni kwenye adhabu mliyo kuwa mkiikanusha"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Nendeni kwenye kivuli chenye mapande matatu"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Hakikingi moto, wala hakiwaepushi na mwako"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Hakika Moto huo unatoa macheche kama majumba"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Kama kwamba ni ngamia wa rangi ya manjano"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Ole wao siku hiyo hao wanao kanusha"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Hii ni siku ambayo hawatatamka kitu"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Wala hawataruhusiwa kutoa udhuru"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Ole wao siku hiyo hao walio kanusha"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Hii ndiyo siku ya kupambanua. Tumekukusanyeni nyinyi na walio tangulia"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Ikiwa mnayo hila, nifanyieni hila Mimi"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Ole wao siku hiyo hao walio kanusha"
        }
    ]
}