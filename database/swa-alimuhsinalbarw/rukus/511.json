{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hasha! Naapa kwa mwezi"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Na kwa usiku unapo kucha"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Na kwa asubuhi inapo pambazuka"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Hakika huo Moto ni katika mambo yaliyo makubwa kabisa"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Ni onyo kwa binaadamu"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Kwa anaye taka miongoni mwenu kutangulia au kuchelewa"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Kila nafsi imo rahanini kwa mabaya iliyo yachuma"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Isipo kuwa watu wa kuliani"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Hao watakuwa katika Mabustani, wawe wanaulizana"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Khabari za wakosefu"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Ni nini kilicho kupelekeni Motoni"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Waseme: Hatukuwa miongoni walio kuwa wakisali"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Wala hatukuwa tukiwalisha masikini"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Na tulikuwa tukizama pamoja na walio zama katika maovu"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Na tulikuwa tukiikanusha siku ya malipo"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Mpaka yakini ilipo tufikia"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Basi hautawafaa kitu uombezi wa waombezi"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Basi wana nini hata wanapuuza onyo hili"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Kama kwamba wao ni mapunda walio timuliwa"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Wanao mkimbia simba"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Ati kila mmoja katika wao anataka apewe nyaraka zilizo funuliwa"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hasha! Kwani wao hawaiogopi Akhera"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hasha! Kwa hakika huu ni ukumbusho"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Basi anaye taka atakumbuka"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Na hawatakumbuka isipo kuwa Mwenyezi Mungu atake. Uchamngu ni kwake Yeye, na msamaha ni wake Yeye"
        }
    ]
}