{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "WANAULIZANA nini"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Ile khabari kuu"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ambayo kwayo wanakhitalifiana"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "La! Karibu watakuja jua"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Tena la! Karibu watakuja jua"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Kwani hatukuifanya ardhi kama tandiko"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Na milima kama vigingi"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Na tukakuumbeni kwa jozi"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Na tukakufanya kulala kwenu ni mapumziko"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Na tukaufanya usiku ni nguo"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Na tukaufanya mchana ni wa kuchumia maisha"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Na tukajenga juu yenu saba zenye nguvu"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Na tukaifanya taa yenye mwanga na joto"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Na tukateremsha maji yanayo anguka kwa kasi kutoka mawinguni"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ili tutoe kwayo nafaka na mimea"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Na mabustani yenye miti iliyo kamatana"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Hakika siku ya uamuzi imewekewa wakati wake"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Siku litapo pulizwa barugumu, nanyi mtakuja kwa makundi"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Na mbingu zitafunguliwa, ziwe milango"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Na milima itaondolewa na itakuwa kama sarabi"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Hakika Jahannamu inangojea"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Kwa walio asi ndio makaazi yao"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Wakae humo karne baada ya karne"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Hawataonja humo chochote kibaridi wala kinywaji"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ila maji yamoto sana na usaha"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Ndio jaza muwafaka"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Hakika hao hawakuwa wakitaraji kuwa kuna hisabu"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Na wakikanusha Aya zetu kwa nguvu"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Na kila kitu Sisi tumekidhibiti kwa kukiandika"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Basi onjeni! Nasi hatutakuzidishieni ila adhabu"
        }
    ]
}