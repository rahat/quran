{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Jua litakapo kunjwa"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Na nyota zikazimwa"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Na milima ikaondolewa"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Na ngamia wenye mimba pevu watakapo achwa wasishughulikiwe"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Na wanyama wa mwituni wakakusanywa"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Na bahari zikawaka moto"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Na nafsi zikaunganishwa"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Na msichana aliye zikwa hai atapo ulizwa"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Kwa kosa gani aliuliwa"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Na madaftari yatakapo enezwa"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Na mbingu itapo tanduliwa"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Na Jahannamu itapo chochewa"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Na Pepo ikasogezwa"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kila nafsi itajua ilicho kihudhurisha"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Naapa kwa nyota zinapo rejea nyuma"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Zinazo kwenda, kisha zikajificha"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Na kwa usiku unapo pungua"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Na kwa asubuhi inapo pambazuka"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kwamba hakika bila ya shaka hii ni kauli ya Mjumbe mtukufu"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Mwenye nguvu na mwenye cheo kwa huyo Mwenye Kiti cha Enzi"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Anaye t'iiwa, tena muaminifu"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Na wala huyu mwenzenu hana wazimu"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Na hakika yeye alimwona kwenye upeo wa macho ulio safi"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Wala yeye si bakhili kwa mambo ya ghaibu"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Wala hii si kauli ya Shetani maluuni"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Basi mnakwenda wapi"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Haikuwa hii ila ni ukumbusho kwa walimwengu wote"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Kwa yule miongoni mwenu anaye taka kwenda sawa"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Wala nyinyi hamtataka isipo kuwa atake Mwenyezi Mungu Mola Mlezi wa walimwengu wote"
        }
    ]
}