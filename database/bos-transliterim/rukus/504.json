{
    "rukus": [
        {
            "chapter": 71,
            "verse": 1,
            "text": "‘INNA ‘ERSELNA NUHÆN ‘ILA KAWMIHI ‘EN ‘ENDHIR KAWMEKE MIN KABLI ‘EN JE’TIJEHUM ‘ADHABUN ‘ELIMUN"
        },
        {
            "chapter": 71,
            "verse": 2,
            "text": "KALE JA KAWMI ‘INNI LEKUM NEDHIRUN MUBINUN"
        },
        {
            "chapter": 71,
            "verse": 3,
            "text": "‘ENI A’BUDU ELLAHE WE ETTEKUHU WE ‘ETI’UNI"
        },
        {
            "chapter": 71,
            "verse": 4,
            "text": "JEGFIR LEKUM MIN DHUNUBIKUM WE JU’UEHHIRKUM ‘ILA ‘EXHELIN MUSEMMEN ‘INNE ‘EXHELEL-LAHI ‘IDHA XHA’E LA JU’UEHHARU LEW KUNTUM TA’LEMUNE"
        },
        {
            "chapter": 71,
            "verse": 5,
            "text": "KALE RABBI ‘INNI DE’AWTU KAWMI LEJLÆN WE NEHARÆN"
        },
        {
            "chapter": 71,
            "verse": 6,
            "text": "FELEM JEZID/HUM DU’A’I ‘ILLA FIRARÆN"
        },
        {
            "chapter": 71,
            "verse": 7,
            "text": "WE ‘INNI KULLEMA DE’AWTUHUM LITEGFIRE LEHUM XHE’ALU ‘ESABI’AHUM FI ‘ADHANIHIM WE ESTEGSHEW THIJABEHUM WE ‘ESERRU WE ESTEKBERU ESTIKBARÆN"
        },
        {
            "chapter": 71,
            "verse": 8,
            "text": "THUMME ‘INNI DE’AWTUHUM XHIHARÆN"
        },
        {
            "chapter": 71,
            "verse": 9,
            "text": "THUMME ‘INNI ‘A’LENTU LEHUM WE ‘ESRERTU LEHUM ‘ISRARÆN"
        },
        {
            "chapter": 71,
            "verse": 10,
            "text": "FEKULTU ESTEGFIRU REBBEKUM ‘INNEHU KANE GAFFARÆN"
        },
        {
            "chapter": 71,
            "verse": 11,
            "text": "JURSILI ES-SEMA’E ‘ALEJKUM MIDRARÆN"
        },
        {
            "chapter": 71,
            "verse": 12,
            "text": "WE JUMDIDKUM BI’EMWALIN WE BENINE WE JEXH’AL LEKUM XHENNATIN WE JEXH’AL LEKUM ‘ENHARÆN"
        },
        {
            "chapter": 71,
            "verse": 13,
            "text": "MA LEKUM LA TERXHUNE LILLAHI WEKARÆN"
        },
        {
            "chapter": 71,
            "verse": 14,
            "text": "WE KAD HALEKAKUM ‘ETWARÆN"
        },
        {
            "chapter": 71,
            "verse": 15,
            "text": "‘ELEM TEREW KEJFE HALEKAL-LAHU SEB’A SEMAWATIN TIBAKÆN"
        },
        {
            "chapter": 71,
            "verse": 16,
            "text": "WE XHE’ALEL-KAMERE FIHINNE NURÆN WE XHE’ALE ESH-SHEMSE SIRAXHÆN"
        },
        {
            "chapter": 71,
            "verse": 17,
            "text": "WEL-LAHU ‘ENBETEKUM MINEL-’ERDI NEBATÆN"
        },
        {
            "chapter": 71,
            "verse": 18,
            "text": "THUMME JU’IDUKUM FIHA WE JUHRIXHUKUM ‘IHRAXHÆN"
        },
        {
            "chapter": 71,
            "verse": 19,
            "text": "WEL-LAHU XHE’ALE LEKUMUL-’ERDE BISATÆN"
        },
        {
            "chapter": 71,
            "verse": 20,
            "text": "LITESLUKU MINHA SUBULÆN FIXHAXHÆN"
        }
    ]
}