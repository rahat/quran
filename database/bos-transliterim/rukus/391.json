{
    "rukus": [
        {
            "chapter": 38,
            "verse": 1,
            "text": "SAD WEL-KUR’ANI DHI EDH-DHIKRI"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "BELIL-LEDHINE KEFERU FI ‘IZZETIN WE SHIKAKIN"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "KEM ‘EHLEKNA MIN KABLIHIM MIN KARNIN FENADEW WELATE HINE MENASIN"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "WE ‘AXHIBU ‘EN XHA’EHUM MUNDHIRUN MINHUM WE KALEL-KAFIRUNE HADHA SAHIRUN KEDHDHABUN"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "‘EXHE’ALEL-’ALIHETE ‘ILEHÆN WAHIDÆN ‘INNE HADHA LESHEJ’UN ‘UXHABUN"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "WE ENTELEKAL-MELE’U MINHUM ‘ENI EMSHU WE ESBIRU ‘ALA ‘ALIHETIKUM ‘INNE HADHA LESHEJ’UN JURADU"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "MA SEMI’NA BIHEDHA FIL-MILLETIL-’AHIRETI ‘IN HADHA ‘ILLA EHTILAKUN"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "‘E’UUNZILE ‘ALEJHI EDH-DHIKRU MIN BEJNINA BEL HUM FI SHEKKIN MIN DHIKRI BEL LEMMA JEDHUKU ‘ADHABI"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "‘EM ‘INDEHUM HAZA’INU REHMETI RABBIKEL-’AZIZIL-WEHHABI"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "‘EM LEHUM MULKU ES-SEMAWATI WEL-’ERDI WE MA BEJNEHUMA FELJERTEKU FIL-’ESBABI"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "XHUNDUN MA HUNALIKE MEHZUMUN MINEL-’EHZABI"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "KEDHDHEBET KABLEHUM KAWMU NUHIN WE ‘ADUN WE FIR’AWNU DHUL-’EWTADI"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "WE THEMUDU WE KAWMU LUTIN WE ‘ESHABUL-’EJKETI ‘ULA’IKEL-’EHZABU"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "‘IN KULLUN ‘ILLA KEDHDHEBE ER-RUSULE FEHEKKA ‘IKABI"
        }
    ]
}