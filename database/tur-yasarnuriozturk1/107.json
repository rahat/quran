    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gördün mü o, dini yalan sayanı"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte odur yetimi itip kakan"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmayı özendirmez o"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay haline o namaz kılanların ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Namazlarından gaflet içindedir onlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Riyaya sapandır onlar/gösteriş yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve onlar, kamu hakkına/yardıma/zekâta/iyiliğe engel olurlar"
        }
    ]
}