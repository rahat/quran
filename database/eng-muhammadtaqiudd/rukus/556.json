{
    "rukus": [
        {
            "chapter": 114,
            "verse": 1,
            "text": "Say: \"I seek refuge with (Allah) the Lord of mankind"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "The King of mankind"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "The Ilah (God) of mankind"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "From the evil of the whisperer (devil who whispers evil in the hearts of men) who withdraws (from his whispering in one's heart after one remembers Allah)"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Who whispers in the breasts of mankind"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Of jinns and men"
        }
    ]
}