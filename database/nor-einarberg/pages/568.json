{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "Så i dag har han ingen god venn her"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "og ingen mat, unntatt kloakk"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "som bare synderne tar inn.»"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "Nei, Jeg sverger ved det dere ser"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "og ved det dere ikke ser"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "– dette er et ærverdig sendebuds tale"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "Det er ikke en skalds ord, lite tror dere"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "og ikke en spåmanns ord, lite tenker dere etter"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Det er en åpenbaring fra all verdens Herre"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "Hvis han hadde grepet ord om Oss ut av luften"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "så ville Vi grepet ham i høyre hånd"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "og skåret av hans pulsåre"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "og ikke en av dere kunne redde ham unna"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "Dette er en påminnelse for de gudfryktige"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "Men Vi vet at det blant dere er fornektere"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "For de vantro er den sorg og bedrøvelse"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "Men den er jo den sikreste sannhet"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Så pris din Herre, den Veldiges navn"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "En som spør, etterlyser den tilstundende straff"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "for de vantro, som ingen kan avverge"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "fra Gud, himmelstigens Herre"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "til Ham stiger englene og Ånden opp, på en dag hvis utstrekning er femti tusen år"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Så vis vakkert tålmod"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "De anser den langt borte"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "men Vi ser den nær"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "Den dag, når himmelen blir som smeltet kobber"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "og fjellene som kardet ull"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "når venn ikke snakker til venn"
        }
    ]
}