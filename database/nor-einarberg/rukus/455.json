{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Ved dem som skrider hurtig frem"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "de lastbærende"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "de lett glidende"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "de som fordeler ting"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Det som dere er truet med er visselig sant"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "og dommen inntreffer for visst"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Ved himmelen med alle sine baner"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "dere fører motstridende tale"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "og noen føres i falsk lei"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Død over alle løgnmakere"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "som i sin forvirring tar seg blindt til rette"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "og spør: «Når inntreffer dommens dag?»"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Jo, den dag de prøves over Ilden"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "«Smak deres prøvelse! Dette er det dere ville ha påskyndet!»"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "De gudfryktige skal være i paradisets haver blant kilder"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "og mottar det Herren gir dem, de handlet vel før dette"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "brukte lite av natten til søvn"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "og bad ved morgengry om tilgivelse"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "og tiggere og utstøtte hadde del i det de eide"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "På jorden er jærtegn for dem som har troens visshet"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "og i dere selv! Kan dere ikke se"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "I himmelen beror deres underhold, og det dere er lovet"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Ved himmelens og jordens Herre, det er så sant som at dere kan tale"
        }
    ]
}