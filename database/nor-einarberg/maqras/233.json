{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Hva snakket de med hverandre om"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Om det store budskap"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "som de er uenige om"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Nei, sannelig skal de få å vite"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Så sannelig skal de få å vite"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Har Vi ikke gjort jorden til et leie"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Og fjellene til støttepilarer"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Vi har skapt dere parvis"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "og gitt dere søvnen til hvile"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "og gjort natten til en kledning"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "og dagen til å skaffe en levemåte"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Over dere har Vi bygget syv solide himler"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "og plassert en skinnende lampe"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "og Vi lot falle regn fra regntunge skyer i strømmer"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "for derved å frembringe korn og planter"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "og bugnende haver"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dommens dag er fastsatt"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Den dag det støtes i basunen, og dere kommer i flokker"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "når himmelen åpnes og blir dører"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "og fjellene settes i bevegelse og blir en luftspeiling"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Sannelig, helvete ligger på lur"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "et hjem for de oppsetsige"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Der skal de bli gjennom tider"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "og der smaker de ingen forfriskende kjølighet og intet å drikke"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "unntatt kokende vann og kloakk"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "som en passende belønning"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "De så ikke frem til en avregning"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "og fornektet trossig Vårt ord"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Alt har Vi opptegnet i en regnskapsbok"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "«Nå kan dere smake! Vi skal bare øke straffen enda mer.»"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "De gudfryktige har i vente seierens sted"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "haver og vingårder"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "høybarmede, jevngamle jomfruer"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "og et fylt beger"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Der hører de verken tomt snakk eller løgnprat"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Som lønn fra Herren, som gave og som avregning"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "fra Herren over himmel og jord og alt som mellom dem er, den Barmhjertige, som ingen formår å tale til"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Den dag, da Ånden og englene står på rekke og rad, da kan ingen tale, unntatt den som den barmhjertige har tillatt, og som taler rett"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Dette er sannhetens dag, og måtte alle som vil, finne hjem til Herren"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Vi har advart dere mot en overhengende straff, den dag når mennesket får se hva han har sendt i forveien til regnskapet, og den vantro utbryter: «Hadde jeg bare vært støv!»"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Ved dem som trekker ut og spenner"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Ved dem som går ivrig frem"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Ved dem som siger frem"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "og så tar ledelsen"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "og tar seg av saken"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "Den dag når rystelsen ryster"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "og følges av rystelse"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "på denne dag vil hjertene banke"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "og blikkene slås ned"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "De sier: «Skal vi bringes tilbake til det vi var"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Når vi er morkne ben?»"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Og de tilføyer: «Det vil være en retur med tap!»"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Men det lyder et eneste skrall"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "og så er de lys våkne"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Historien om Moses har vel nådd deg"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Da Herren ropte til ham i den hellige dal Tuwa"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "«Gå til Farao! Han er oppsetsig"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Og si: ’Ønsker du ikke å rense deg"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "og at jeg leder deg hen til Herren, så du kan vise gudsfrykt?’»"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Så viste Han ham det største jærtegnet"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "men han forkastet og var ulydig"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Så vendte han ryggen og fjernet seg raskt"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "sammenkalte folk"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "og sa: «Jeg er deres høyeste herre.»"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Så tok Gud ham fatt med den hinsidiges og denne verdens straff"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "I dette er visselig en lærepenge for den som har gudsfykt"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Er dere mer krevende å skape, eller himmelen Han har bygget"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Han hevet opp dens tak og gav den form"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "lot dens natt bli mørk og lot morgenlyset komme frem"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Så bredte Han jorden ut"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "og brakte frem av den vann og grønne enger"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "og Han gav fjellene fast feste"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "til glede for dere og deres hjorder"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Når så den store katastrofe inntreffer"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "den dag når mennesket kommer i hu hva han jaget etter"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "og helvete bringes frem for alle som ser"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "da skal den som var oppsetsig"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "og foretrakk jordelivet"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "få helvete til herberge"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Men den som fryktet Herrens maktstilling og nektet seg sine lyster"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "– se, paradisets have er herberget"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "De spør deg om timen, om når den kommer"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Hva kan vel du si om dette"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Dens endelige tid beror hos Herren"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Du er bare en advarer for dem som frykter den"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Den dag de får se den, blir det som om de hadde ventet bare en kveld eller en morgenstund"
        }
    ]
}