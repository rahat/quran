{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Han rynket pannen og vendte seg bort"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "fordi den blinde kom til ham"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Men hva vet du, kanskje vil han rense seg"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "eller komme til ettertanke, så formaningen kan være til gagn for ham"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Men den som er seg selv nok"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "ham tar du vel imot"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "skjønt det er ikke ditt ansvar om han ikke renser seg"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Men den som kommer til deg full av iver"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "og frykt"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ham overser du"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Nei sannelig, dette er en påminnelse"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "og den som vil, legger seg den på minne"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "på ærverdige blad"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "opphøyde og rene"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ved skriveres hender"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "edle og fromme"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Død over mennesket! Hvor utakknemlig han er"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Av hva har Han vel skapt ham"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Av en sæddråpe har Han skapt ham, og så fastsatt rammen for ham"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Derpå har Han lagt til rette hans vei"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Så lar Han ham dø og bringer ham i graven"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Derpå, når Han vil, gjenoppvekker Han ham"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Nei, sannelig, han har ikke utført det Han påla ham"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Så la da mennesket betrakte sin føde"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Vi har latt vannet strømme rikelig"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "og så laget Vi små sprekker i jorden"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Og i dem har Vi latt korn vokse"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "og vinstokker og grønnsaker"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "oliven og palmer"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "og trefylte haver"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "og frukt, og fôr"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "til glede for dere og deres fe"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Men når drønnet kommer"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "På denne dag flyr mannen bort fra sin bror"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "sin mor og sin far"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "sin hustru og sine barn"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "På denne dag har enhver en sak som opptar ham fullt"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "På denne dag vil det være ansikter som stråler"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "og ler og er fulle av fryd"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "På denne dag vil det være ansikter fylt av støv"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "og dekket av mørke"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Disse er de vantro, de syndefulle"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Når solen formørkes"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "når stjernene fordunkles"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "når fjellene settes i bevegelse"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "når kameler som skal føde forsømmes"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "når villdyrene flokker seg"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "når havene syder"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "når sjelene forenes med kroppene"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "når småpiker som ble levende begravd spørres"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "for hvilken synd de ble drept"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "når skriftrullene (regnskapsbøkene) åpnes"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "når himmelen flås vekk"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "når det fyres opp i helvete"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "når paradiset bringes nær"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "da skal enhver få vite hva han har prestert"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Jeg sverger ved planetene"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "de vandrende og forsvinnende stjerner"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "ved natten, når den mørkner"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ved morgenen, når den trekker pusten"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Dette er sannelig ord fra en nobel utsending"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "med stor makt hos tronens Herre"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "fast, adlydt og trofast"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Deres bysbarn er aldeles ikke besatt"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Han har virkelig sett ham ved den klare horisont"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Han var ikke tilbakeholden når det gjelder det skjulte"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Det var ikke en forkastet satans ord"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hvor vil dere da ta veien"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Dette er intet annet enn en formaning for all verden"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "for den av dere som vil holde rett kurs"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Men dere vil ikke, med mindre Gud, all verdens Herre, vil"
        }
    ]
}