{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Te devotshmit do te jene, pa dyshim, ne mes te burimeve e hijeve"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Edhe pemeve te deshiruara"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "“Hani dhe pini, u befte mire, sepse ashtu i keni merituar”"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Ashtu ne i shperblejme mireberesit"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Ate dite mjere pergenjeshtaret"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Hani dhe kenaquni por, pak kohe, se ju jeni, me te vertete, mekatare"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Ate dite mjere pergenjeshtaret"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Dhe kur u thuhet: “Peruluni!”, ata nuk perulen"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Ate dite mjere pergenjeshtaret"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Po ciles fjale, perpos asaj (te Kur’anit) do t’i besojne"
        }
    ]
}