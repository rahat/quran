{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "a rozkaz nas je pouze slovo jedine, rychle jak oka mziknuti"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "A vskutku jsme jiz zahubili jine vam podobne. Coz neni nikoho, kdo pripomnel by si to nyni"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "A vse, co konali, je v Pismech zapsano"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "a vse, at male ci velke, je v nich zaznamenano"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "A bohabojni veru budou mezi zahradami a rekami"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "v pribytku pravdy, u vladce vsemohouciho"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "Milosrdny"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Koranu naucil"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "cloveka stvoril"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "vysvetleni jej naucil"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Slunce i mesic sve pocty obsahuji"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "a traviny a stromy se pred nim sklaneji"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Nebe On vyzvedl a vahy stanovil"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "na vaze nepodvadejte"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "spravedlive ji stanovte a na vahach neubirejte"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "A zemi, tu pro lidstvo rozprostrel"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "na ni ovoce a palmy s obaly plodu zraji"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "i obili na steblech a rostliny, jez vuni libou maji"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "Ktere z dobrodini Pana sveho muzete popirat"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "A cloveka z hliny podobne hrncirske stvoril"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "a dziny z plamene bezdymneho vytvoril"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Ktere z dobrodini Pana sveho muzete popirat"
        }
