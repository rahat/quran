{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Az se zeme bude otrasat svym zemetresenim"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "az zeme sva bremena vyvrhne"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "clovek se zepta: \"Co se s ni deje"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "V ten den bude zeme vypravet sve deje"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "podle toho, jak ji to Pan tvuj vnukne"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "V ten den se lide vynori v houfech, aby jim byly ukazany jejich ciny"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "A kdo ucinil dobra jen za vahu prasku, uzri je"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "a kdo ucinil zla jen za vahu prasku, uzri je"
        }
    ]
}