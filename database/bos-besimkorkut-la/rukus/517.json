{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Oni koji su se Allaha bojali bice među izvorima, u gustim bascama"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "i među vocem koje budu zeljeli"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Jedite i pijte, prijatno neka vam je! – za ono sto ste radili"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Tako cemo Mi one koji cine dobra djela nagraditi. –"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Tesko toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Jedite i naslađujte se, ali zakratko! – vi ste, zaista, grjesnici!\" –"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Tesko toga dana poricateljima! –"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "jer kad im se govorilo: \"Budite prema Allahu ponizni!\" – oni to nisu htjeli biti. –"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Tesko toga dana poricateljima"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Pa u koji ce govor, ako ne u Kur'an, vjerovati"
        }
    ]
}