{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Da li je doprla do tebe vijest o teskoj nevolji? –"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "kada ce se neka lica potistena"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "premorena, napacena"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "u vatri uzarenoj prziti"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "sa vrela uzavrelog piti"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "kada drugog jela osim trnja nece imati"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "koje nece ni ugojiti ni glad utoliti"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Neka lica toga dana bice radosna"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "trudom svojim zadovoljna –"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "u Dzennetu izvanrednome"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "u kome prazne besjede nece slusati"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "U njemu su izvor-vode koje teku"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "u njemu su i divani skupocjeni"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "i pehari postavljeni"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "i jastuci poredani"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "i cilimi rasireni"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Pa zasto oni ne pogledaju kamile – kako su stvorene"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "i nebo – kako je uzdignuto"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "i planine – kako su postavljene"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "i Zemlju – kako je prostrta"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ti poucavaj – tvoje je da poucavas"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ti vlast nad njima nemas"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "A onoga koji glavu okrece i nece da vjeruje"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "njega ce Allah najvecom mukom muciti"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Nama ce se oni, zaista, vratiti"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "i pred Nama ce, doista, racun polagati"
        }
    ]
}