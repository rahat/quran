{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığında"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "ve Rabbini dinleyip haklandığında"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "yer uzatılıp dümdüz edildiğinde"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "ve içindekileri dışa atıp tamamen boşaldığında"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "ve Rabbini dinleyip haklandığında"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "ey insan, sen gerçekten Rabbine doğru çaba üstüne çaba gösterir, sonra da O´na varırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kitabı sağ eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "kolay bir hesaba tabi tutulur"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "ve ailesine sevinçli olarak döner"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Helak diye çağırır"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "ve alevli ateşe yaslanır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, ailesi içinde sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Çünkü o, hiç inkılap görmeyecek (bu durumunun asla değişmeyeceğini) sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, çünkü Rabbi, onu gözetiyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Şimdi yemin ederim, o şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "geceye ve derlediğine"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "ve derlendiğinde (dolunay haline geldiğinde) o aya ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "sizler binip binip tabakadan tabakaya (halden hale) geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "O halde onlara ne oluyor ki, iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karşılarında Kur´an okunduğu zaman secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Hatta o küfredenler yalan derler"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, içlerindekini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara acı bir azap müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi işler yapanlar başka; onlara tükenmez bir mükafat vardır"
        }
    ]
}