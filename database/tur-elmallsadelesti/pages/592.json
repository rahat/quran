    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz, dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha hayırlı ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Haberiniz olsun, bu ilk sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Geldi mi sana o Ğaşiye (her şeyi kuşatacak salgın, istilacı kıyametin) haberi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün kimi yüzler eğilmiş, zillete düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmış, fakat boşuna yorulmuştur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızışmış bir ateşe yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan sulanırlar"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Dari´ adındaki bitkiden başka yiyecekleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler, ne açlıktan kurtarır"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Kimi yüzler de mesuttur o gün"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından hoşnut"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennette"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş bir söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "yüksek kanepeler"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "konulmuş küpler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "dizilmiş koltuklar, yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "serilmiş nefis döşemeler vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Hala bakmazlar mı o deveye ki, nasıl yaratılmış"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe ki, nasıl kaldırılmış"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara ki, nasıl dikilmişler"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere ki, nasıl yayılmış"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Haydi öğüt ver, sen şimdi yalnızca bir öğütçüsün"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde bir zorba değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak tersine giden ve inkar eden başka"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en büyük azap ile cezalandıracaktır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Onlar, mutlaka döne dolaşa Bize geleceklerdir"
        },
        {
            "chapter": 88,
