{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "O güneş dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "yıldızlar bulandığında"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kıyılmaz mallar bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vahşi hayvanlar bir araya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "denizler ateşlendiğinde"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "ruhlar eşleştirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen kıza sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hangi suçtan öldürüldü diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "defterler açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "gökyüzü sıyrılıp açıldığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "cehennem kızıştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "bir nefis (herkes) ne hazırladığını anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Şimdi yemin ederim o sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "o akıp akıp yuvasına girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "yöneldiği zaman o geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "nefeslendiği zaman o sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "muhakkak o (Kur´an), şerefli bir elçinin getirdiği bir sözdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi, pek güçlü, Arş´ın sahibinin katında itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada kendisine itaat edilendir, güvenilendir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Yoksa sizin arkadaşınız (Muhammed), delirmiş değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Vallahi onu (Cebrail) açık ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında kıskanılır da değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Ve o (Kur´an), kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Böyle iken siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, sadece bir öğüttür, alemler için"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Ve içinizden dosdoğru olmayı dileyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Fakat o alemlerin Rabbi olan Allah dilemeyince siz dileyemezsiniz"
        }
    ]
}