{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve parıltısına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "ona uyduğunda aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "onu açıp ortaya çıkardığında gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "onu sardığında geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "yere ve onu döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "nefse ve onu düzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "sonra da ona bozukluğunu ve korunmasını ilham edene ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "gerçek kurtuluş bulmuştur onu temizlikle parlatan"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gömen de ziyan etmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlığından inanmadı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "O en yaramazları fırladığı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın elçisi onlara: «Allah´ın devesini ve onun sulanışını gözetin!» demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat ona inanmadılar da onu (deveyi) devirdiler. Rableri de günahlarını başlarına geçiri geçiriverdi de o yeri düzleyiverdi"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Öyle ya, O, o işin sonundan korkacak değil ki"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun bürürken o geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "açıldığı zaman o gündüze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "erkeği ve dişiyi yaratana ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "sizin çabanız dağınıktır"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Ama bundan böyle her kim vergi verir korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "ve en güzeli doğrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Biz onu en kolayına kolaylayacağız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Her kim de cimrilik eder, kendisini müstağni sayar"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "ve en güzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "onu da en zor olana hazırlayacağız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Ve yuvarlandığı zaman onu malı kurtaramayacak"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Kesinlikle doğru yolu göstermek Bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Kuşkusuz sonu da Bizim önü de Bizim (ahiret de Bizimdir dünya da)"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi köpürdükçe köpüren bir ateşe karşı uyardım"
        }
    ]
}