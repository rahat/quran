    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o gökyüzüne ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Bildin mi Tarık nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O karanlığı delen (parlak) yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir kimse yoktur ki, üzerinde bir gözetleyici olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun için insan bir düşünsün neden yaratıldığını"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Bir atılgan sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Ki, arka kemiği ile göğüs kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette O, onu döndürmeğe kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Bütün sırların yoklanacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "o zaman ne bir gücü vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüşlü göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ki, o her halde keskin bir hükümdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, onlar hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine kaşı hile kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için o kafirlere mühlet ver, biraz daha süre tanı onlara"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Tesbih et Rabbinin A´la (yüce) ismini"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp düzene koyan Rabbinin"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir edip doğru yolu gösteren Rabbinin"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rabbin ki, mer´ayı, çıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu karamsı, bir sel kusuğuna çevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Bundan böyle sana Kur´an okutacağız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başka; çünkü O, açığı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni en kolay yola muvaffak kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Onun için öğüt ver, eğer öğüt fayda verirse"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygısı olan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Pek bedbaht olan da ondan kaçınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O ki, en büyük ateşe yaşlanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra ne ölecek onda, ne de hayat bulacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu felah bulmuştur temizlenen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        }
    ]
}