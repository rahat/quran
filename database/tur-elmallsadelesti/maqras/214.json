{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "o vakıa (kıyamet) bir koptu mu"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun oluşuna yalan diyen dil olmaz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "İndirir, bindirir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "dağlar serpildikçe serpildiği"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "hepsi dağılıp toz duman haline geldiği"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "siz de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "ki, sağda sağın adamları, ne mutludur onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solda solun adamları, ne mutsuzdur onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "önde, en öne geçenler, işte o ileride olanlar"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Naim cennetlerinde (Allah´a) yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerinde (Allah´a) yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "biraz da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "cevherlerle işlenmiş tahtlar üstünde"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "karşı karşıya kurulmuşlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Etraflarında taze kalan küpeli genç hizmetçiler dolaşırlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Main´den doldurulmuş küpler, ibrikler ve kadehlere"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "bu içkiden ne başları ağrıtılır ne de içtiklerini tüketirler"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Meyve beğendiklerinden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "kuş eti istediklerinden"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "işledikleri amellere mükafat için"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne boş bir laf işitirler, ne de günaha sokan bir söz"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Tek işittikleri söz: «Selam, selam!»"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağın adamları ise, ne sağın adamları"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dalbastı kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "salkım muzlar içinde"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzamış bir gölge"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "çağlayan bir su"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "bir çok meyve"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "(ki) bunlar ne eksilir, ne de yasaklanırlar"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "yüksek döşekler (üstündedirler)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz onları yeniden inşa etmişizdir"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "onları bakire kılmışızdır"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "kocalarını çok seven aynı yaşta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "sağın adamları için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu önceki (ümmet)lerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "bir çoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Solun adamları ise, ne solun adamları"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "kapkara boğucu dumandan bir gölge"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "ne serin, ne de rahatlatıcı"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar bundan önce varlık içinde keyiflerine düşkün şımarık müsriflerdi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahda ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "ve diyorlardı ki: «Biz ölüp, toprak ve kemik yığını olduktan sonra, gerçekten biz mi bir daha diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı?»"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Muhakkak. Öncekilerin ve sonrakilerin tümü"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "belli bir günün belli bir vaktinde mutlaka toplanacaklardır!»"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapık inkarcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "mutlaka bir ağaçtan, zakkumdan yersiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "karınlarınızı onunla doldurursunuz"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "üstüne de kaynar su içersiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "susuzluk illetine tutulmuş kanmak bilmeyen develerin içişi gibi içersiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza gününde onların konuklukları (ağırlanışları) böyledir"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi Biz yarattık, hala tasdik etmeyecek misiniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Şimdi gördünüz mü o döktüğünüz meniyi"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz, yoksa yaratan Biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü Biz takdir ettik ve Bizim önümüze geçilmez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Kılıklarınızı değiştirmek ve sizi bilemeyeceğiniz bir yaratılışta var etmek üzereyiz"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Muhakkak ilk yaratılışı biliyorsunuz. O halde düşünsenize"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Şimdi gördünüz mü o ektiğiniz tohumu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren Biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dilesek onları elbette bir çöpe çevirirdik de ağzınızda şöyle geveler dururdunuz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "«Muhakkak biz çok ziyandayız"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "doğrusu büsbütün mahrum olduk!»"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "şimdi gördünüz mü o içtiğiniz suyu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indiriyordunuz. yoksa Biz miyiz indiren"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu acı bir çorak yapardık. O halde şükretseniz ya"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Bir de o çaktığınız ateşi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi inşa ettiniz, yoksa Biz miyiz inşa eden"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu hem bir ihtar, hem de alandaki muhtaçlara (çöl yolcularına) faydalı kıldık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde Rabbini o büyük adıyla tesbih et"
        }
    ]
}