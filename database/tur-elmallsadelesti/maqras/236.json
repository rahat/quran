{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığında"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "ve Rabbini dinleyip haklandığında"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "yer uzatılıp dümdüz edildiğinde"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "ve içindekileri dışa atıp tamamen boşaldığında"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "ve Rabbini dinleyip haklandığında"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "ey insan, sen gerçekten Rabbine doğru çaba üstüne çaba gösterir, sonra da O´na varırsın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kitabı sağ eline verilen"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "kolay bir hesaba tabi tutulur"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "ve ailesine sevinçli olarak döner"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kitabı arkasından verilen ise"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Helak diye çağırır"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "ve alevli ateşe yaslanır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, ailesi içinde sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Çünkü o, hiç inkılap görmeyecek (bu durumunun asla değişmeyeceğini) sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, çünkü Rabbi, onu gözetiyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Şimdi yemin ederim, o şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "geceye ve derlediğine"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "ve derlendiğinde (dolunay haline geldiğinde) o aya ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "sizler binip binip tabakadan tabakaya (halden hale) geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "O halde onlara ne oluyor ki, iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Karşılarında Kur´an okunduğu zaman secde etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Hatta o küfredenler yalan derler"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah, içlerindekini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onun için onlara acı bir azap müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip iyi işler yapanlar başka; onlara tükenmez bir mükafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "O burçlara sahip gök yüzüne"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "o va´dolunan güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "o şahitlik edecek ve şahitlik edilecek olana yemin olsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "o hendek sahiplerine la´net edildi"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O çıralı ateş sahiplerine"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "O zaman ki, çevresinde oturmuşlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yaptıklarını bizzat seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlara sadece güçlü ve övgüye layık Allah´a iman etmeleri yüzünden kızıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O ki, göklerin ve yerin hükümranlığı yalnız O´nundur ve Allah, herşeye şahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "İnanan erkeklere ve inanan kadınlara eziyet edip de sonra tevbe etmeyenlere kesinlikle cehennem azabı vardır ve de yangın azabı"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İman edip iyi işler yapanlara ise muhakkak altından ırmaklar akan cennetler vardır, işte o büyük kurtuluş odur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Gerçekten Rabbinin tutuşu çok şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Çünkü yoktan var eden de, tekrar dirilten de odur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bununla beraber, çok bağışlayıcıdır, sevgi doludur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arş´ın sahibidir, şanı yücedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediğini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların kıssası sana geldi ya"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun´un ve Semud´un kıssası"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Fakat o küfredenler hala bir yalanlama içindeler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Oysa Allah, onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Fakat o, şanlı bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun o gökyüzüne ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Bildin mi Tarık nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O karanlığı delen (parlak) yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiçbir kimse yoktur ki, üzerinde bir gözetleyici olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Onun için insan bir düşünsün neden yaratıldığını"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Bir atılgan sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Ki, arka kemiği ile göğüs kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Elbette O, onu döndürmeğe kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Bütün sırların yoklanacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "o zaman ne bir gücü vardır, ne de bir yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüşlü göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "ki, o her halde keskin bir hükümdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O asla şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Haberin olsun ki, onlar hep hile kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de hilelerine kaşı hile kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için o kafirlere mühlet ver, biraz daha süre tanı onlara"
        }
    ]
}