{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmiyor mu ki, kabirdekiler deşildiği zaman"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "o göğüslerdekiler derlendiğinde"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "O gün, Rableri onlardan elbette haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "O apaçık bela (Kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o çarpacak bela"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O çarpacak belanın ne olduğunu ne bildirdi ki sana"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar çırpınıp yayılan pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da didilmiş renkli yünler gibi atılacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "İşte o zaman tartıları ağır basan kimse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık hoşnut olacağı bir hayat içindedir o"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat tartıları hafif gelen kimse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "O vakit onun anası Haviyedir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ve bildin mi, Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızışmış bir ateştir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "O çokluk kuruntusu sizleri oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "ta kabirlere kadar gidip ziyaret edişinize kadar"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Öyle değil, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Sonra yine öyle değil, ileride bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Öyle değil, kesin olarak bilseniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "andolsun ki, cehennemi mutlaka göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra yine andolsun ki, onu yakın gözüyle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra andolsun ki, o gün her nimetten sorgulanacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Andolsun Asr´a ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "insan mutlaka bir ziyandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edip iyi işler yapanlar, birbirlerine hep hakkı tavsiye edenler ve sabrı tavsiyeleşenler başka"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Veyl o insanları çekiştirip kaş göz işaretleriyle alay edenlerin bütününe"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "ve bir mal toplayıp hep onu sayana"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Sanır ki, malı kendisini ebedileştirmiştir"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, andolsun ki, o Hutame´ye (cehenneme) atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Bildin mi Hutame nedir"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın, tutuşturulmuş ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "ki, gönüllerin ta üstüne çıkar"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O (ateş), onların üstüne kapatılacaktır mutlaka"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "uzatılmış sütunlar içinde olarak"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Görmedin mi Rabbin ne yaptı fil sahiplerine"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Tuzaklarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Üzerlerine sürü sürü kuşlar saldı"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara balçıktan pişirilmiş sert taşlar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Derken onları, yenilmiş ekin yaprağı gibi kılıverdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş´e imkan sağlandığı için"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "kışın ve yazın yolculuk etme imkanı sağlandığı için"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "hiç olmazsa onun için bu Beyt´in (Kabe´nin) Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Ki kendilerini açlıktan doyurdu ve onları korkudan emin kıldı"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gördün mü o dine yalan diyeni"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte yetimi itip kakan odur"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya teşvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Fakat veyl o namaz kılanlara ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "namazlarında yanılmaktadırlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar ki, gösteriş yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve yardımlığı sakınır (zekatı yemezler)"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Muhakkak Biz, sana Kevseri´i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Sen de Rabbin için namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Doğrusu sana kin besleyendir soyu kesik olan"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: «Ey kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "tapmam o taptıklarınıza"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim kulluk ettiğime tapanlardan değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Hem ben tapıcı değilim sizin taptıklarınıza"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "hem de siz, benim kulluk ettiğime tapıcılardan değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Size dininiz, bana dinim (sizin dininiz size, benim dinim bana)"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah´ın yardımı ve fetih geldiğinde"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "insanları bölük, bölük Allah´ın dinine girerlerken gördüğünde"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "artık Rabbini hamd ile tesbih et ve bağışlamasını dile! Muhakkak ki, O, çok bağışlayandır"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb´in iki eline yuh oldu, kendine de yuh"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ona ne malı fayda verdi, ne de kazandığı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, bir alevli ateşe yaslanacak"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da odun hamalı olacak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Gerdanında fitillisinden bir ip olduğu halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: «O Allah tek birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah, o eksiksiz, Samed´dir (Her şey O´na muhtaçtır)"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Doğurmadı ve doğurulmadı"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "O´na bir küfüv (denk) de olmadı!»"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: «Sığınırım o sabahın Rabbine"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlığı çöküp bastırdığında bir gecenin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "o düğümlere üfleyen üfürükçülerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ve kıskançlık gösterdiğinde bir kıskancın şerrinden!»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: «Sığınırım insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "insanların hükümdarına"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "insanların İlahına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "o sinsi vesvesecinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "ki, insanların sinelerine vesvese verir durur"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerekse insanlardan (olsun).»"
        }
    ]
}