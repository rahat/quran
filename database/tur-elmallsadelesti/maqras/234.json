{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Ekşidi (yüzünü ekşitti) ve döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Ona ama geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin, belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya öğüt alacak da öğüt kendisine fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama ihtiyaç duymayana gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sen onun sesine özeniyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun temizlenmemesinden sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama sana can atarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "içinde saygı duyarak gelmişken"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "sen ondan tegafül ediyor (ona ilgi göstermiyor)sun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır, hayır, sakın! Çünkü o (Kur´an) bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık onu dileyen düşünsün"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Değerli sayfalarda"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yüksek tutulan tertemiz sayfalarda"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "yazıcıların ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "şerefli, takva sahibi yazıcıların"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "O kahrolası insan ne nankör şeydir"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "O yaratan, onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan yarattı da biçimine koydu onu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona kolaylaştırdı yolunu"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü de kabre gömdürdü"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu yeniden diriltecektir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır, hayır doğrusu o, O´nun emrini tam yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de o insan yiyeceğine baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz, o suyu bir döküş (bol bol) dökmekteyiz"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra o yeryüzünü bir yarış (iyiden iyiye) yarmaktayız"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu şekilde orada daneler"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "üzümler ve yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytinlikler ve hurmalıklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "afaka ser çekmiş dilber (gönül alan) bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyveler, çayırlar; neler yetiştirmekteyiz"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve davarlarınızın yararlanması için"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Ama o sayha (gürültüsünü dinletecek bela) geldiği zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "kişinin kaçacağı gün kardeşinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "karısından ve oğullarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "Onlardan her kişinin o gün başından aşan bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün yüzler vardır ışılar"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "güler, sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yüzler de vardır, üzerinde tor toz"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onu bir kara sarar"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlardır, o kafirler, facirler (yoldan sapmış günahkarlar)"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "O güneş dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "yıldızlar bulandığında"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kıyılmaz mallar bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vahşi hayvanlar bir araya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "denizler ateşlendiğinde"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "ruhlar eşleştirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen kıza sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hangi suçtan öldürüldü diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "defterler açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "gökyüzü sıyrılıp açıldığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "cehennem kızıştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "bir nefis (herkes) ne hazırladığını anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Şimdi yemin ederim o sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "o akıp akıp yuvasına girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "yöneldiği zaman o geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "nefeslendiği zaman o sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "muhakkak o (Kur´an), şerefli bir elçinin getirdiği bir sözdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi, pek güçlü, Arş´ın sahibinin katında itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada kendisine itaat edilendir, güvenilendir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Yoksa sizin arkadaşınız (Muhammed), delirmiş değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Vallahi onu (Cebrail) açık ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında kıskanılır da değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Ve o (Kur´an), kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Böyle iken siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, sadece bir öğüttür, alemler için"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Ve içinizden dosdoğru olmayı dileyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Fakat o alemlerin Rabbi olan Allah dilemeyince siz dileyemezsiniz"
        }
    ]
}