{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "O apaçık bela (Kıyamet)"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o çarpacak bela"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O çarpacak belanın ne olduğunu ne bildirdi ki sana"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar çırpınıp yayılan pervaneler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da didilmiş renkli yünler gibi atılacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "İşte o zaman tartıları ağır basan kimse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "artık hoşnut olacağı bir hayat içindedir o"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Fakat tartıları hafif gelen kimse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "O vakit onun anası Haviyedir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Ve bildin mi, Haviye nedir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızışmış bir ateştir"
        }
    ]
}