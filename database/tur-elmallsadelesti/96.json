{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku O yaratan Rabbinin adıyla"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "İnsanı bir kan pıhtısından yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, O, cömertliğinin sonu olmayan Rabbindir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalem ile (yazmayı) öğreten de"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "O, insana bilmediği şeyleri öğretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Sakın okumazlık etme! Çünkü insan, muhakkak azıtır"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendisini artık ihtiyacı yokmuş görmekle"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Kesinlikle sonunda Rabbinedir dönüş"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Baksana o engelleyene"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "namaz kılmakta olan bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Baksana o doğru yolda giderse"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ya da takva sahibi olmayı emrederce, fena mı"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Baksana, yalanlar ve tersine giderse, iyi mi"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Muhakkak Allah´ın görmekte olduğunu bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Sakın, şanım hakkı için, eğer (akıllanıp) vazgeçmezse, muhakkak Biz sürükleyeceğiz o alnı"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, cani bir alnı"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman çağırsın kurultayını, meclisini"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz çağıracağız zebanileri"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır, sakın onu dinleme de, secde et ve yaklaş"
        }
    ]
}