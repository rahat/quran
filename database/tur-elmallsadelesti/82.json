{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gökyüzü çatladığında"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "yıldızlar döküldüğünde"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler (yarılıp) akıtıldığında"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kabirler deşildiğinde"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "bir nefis (herkes) önden neyi gönderdiğini ve neyi bıraktığını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, o lütfu bol olan Rabbine karşı ne aldattı seni"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, seni yarattı, düzenine koydu ve dengeli kıldı"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni dilediği herhangi bir biçimde oluşturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, hayır, doğrusu siz dini yalanlıyor, cezaya inanmıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki, üzerinizde gözcüler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Değerli, dürüst katipler"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Her ne yaparsanız biliyorlar"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Şüphesiz ki, iyiler Naim (Cenneti) içindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ve şüphesiz kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gününde ona yaşlanacaklardır"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ondan çıkacak da değillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sen bildin mi nedir din günü"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, sen bildin mi nedir din günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün ki, kimse, kimse için hiçbir yardım yapma gücüne sahip olamaz ve o gün buyruk yalnız Allah´ındır"
        }
    ]
}