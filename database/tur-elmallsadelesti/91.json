{
    "chapter": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve parıltısına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "ona uyduğunda aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "onu açıp ortaya çıkardığında gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "onu sardığında geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "yere ve onu döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "nefse ve onu düzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "sonra da ona bozukluğunu ve korunmasını ilham edene ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "gerçek kurtuluş bulmuştur onu temizlikle parlatan"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Onu kirletip gömen de ziyan etmiştir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud kavmi azgınlığından inanmadı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "O en yaramazları fırladığı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın elçisi onlara: «Allah´ın devesini ve onun sulanışını gözetin!» demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat ona inanmadılar da onu (deveyi) devirdiler. Rableri de günahlarını başlarına geçiri geçiriverdi de o yeri düzleyiverdi"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Öyle ya, O, o işin sonundan korkacak değil ki"
        }
    ]
}