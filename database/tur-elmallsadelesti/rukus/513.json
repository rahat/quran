{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Ama o ne sadaka verdi ne de namaz kıldı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalan dedi ve döndü"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da gerneşe gerneşe yakınlarına gitti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "O bela sana layıktır"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Evet gerektir o bela sana gerek"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan sanır mı başıboş bırakılacağını"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O (Rahme) dökülen bir damla meniden değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra bir pıhtı oldu, derken (Allah onu) biçime koydu, derken tesviye etti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "derken ondan da iki eşi yaptı: Erkek ve dişi"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "(Artık) o ölüleri diriltmeye kadir değil mi"
        }
    ]
}