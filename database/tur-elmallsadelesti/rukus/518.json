{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neden soruşuyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O büyük peygamberlik haberinden"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "ki Onlar onda görüş ayrılığına düşüyorlar"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, ileride bilecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Hayır, hayır, ileride bilecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz, yeryüzünü bir döşek yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da birer kazık (yapmadık mı)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizleri çift çift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir örtü yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü bir geçim vakti yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Üstünüze yedi sağlam bina (gök) çattık"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "İçlerine parıl parıl parlayan bir kandil astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "O yoğun bulutlardan şarıl şarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler ve otlar çıkaralım diye"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve sarmaş dolaş bağlar bahçeler"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Şüphesiz ki, o fasıl (kıyamet) günü belirlenmiş bir vakit olmuştur"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a üfürüldüğü gün, bölük bölük gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gök de açılmış, kapılar oluşmuştur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Dağlar yürütülmüş, bir serap olmuştur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Şüphesiz, cehennem bir gözetleme yeri olmuştur"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlara bir barınak olmuştur"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "İçinde devirlerce kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne bir serinlik tadacaklar, ne de bir içecek"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Yalnızca bir kaynar su ve irin"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına tamamen uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Çünkü onlar, hiçbir hesap ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimize yalan diye diye tam bir yalancı olmuşlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz ise her şeyi sayıp bir kitaba geçirmişiz"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Artık tadın! Artık, azabınızı artırmaktan başka birşey yapacak değiliz"
        }
    ]
}