{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun, o daldırıp çıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "usulcacık çekenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "yüzüp yüzüp gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "yarışıp geçenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "ve bir iş çevirenlere ki"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "o gün sarsıntı sarsacak"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Onu ikincisi izleyecek"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün yürekler oynar kaygıdan"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözler kalkmaz saygıdan"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz gerçekten eski halimize döndürülecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ya, ufalanmış kemikler olduktan sonra ha?»"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Dediler ki: «Öyleyse o zararlı bir dönüş!»"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Fakat o zorlu bir kumandadır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "bir de bakarsın uyanmışlar, hepsi meydanda"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Sana o Musa´nın haberi geldi ya"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona o mukaddes vadi Tuva´da seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Haydi git Firavun´a, çünkü o pek azıttı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: «İster misin temizlenesin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Sana Rabbini tanıtayım da ona saygı duyasın?»"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Vardı ona, o büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o, yalan dedi ve isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra koşarak ters yöne gitti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken toplayıp bağırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Benim en büyük Rabbiniz! dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu tuttu, sonuna ve önüne (ahirette ve dünyada) ibret olmak üzere bir cezaya çarptırdı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Şüphesiz ki, bunda saygı duyacaklar için bir ibret vardır"
        }
    ]
}