{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer o sarsıntıyla sarsıldığında"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "yer ağırlıklarını çıkardığında"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "İnsan: «Buna ne oluyor?» dediğinde"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "o gün, (yer) bütün haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar, amellerinin kendilerine gösterilmesi için bölükler halinde fırlayıp çıkacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Her kim zerre kadar bir hayır isterse onu görecek"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "her kim de zerre kadar bir kötülük işlerse onu görecektir"
        }
    ]
}