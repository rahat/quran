{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Senin için bağrını açmadık mı"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "İndirmedik mi senden o yükünü"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "O sırtında gıcırdamakta olan (ve bu şekilde sana eziyet veren) yükünü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin şanını yüceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Demek ki, zorlukla beraber bir kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet o zorlukla beraber bir kolaylık var"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde boş kaldığında yine kalk yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve ancak Rabbinden ümit et, hep O´na doğrul"
        }
    ]
}