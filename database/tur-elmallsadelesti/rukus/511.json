{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, hayır! O ay´a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "döndüğü an o geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "açtığı sıra o sabaha andolsun ki"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Sekar muhakkak büyüklerin (belaların) biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "İnsanları ikaz etmek için"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "içinizden ileri gitmek veya geri kalmak isteyen kimseleri"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis kazancına bağlıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "ancak sağın adamları"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetlerdedir; soruşur dururlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "suçlulardan"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Sekar´a sokan nedir? diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "(Onlar) derler: «Biz namaz kılanlardan değildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "fakirlere yemek yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "batakçılarla dalar giderdik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "ve hesap gününe yalan derdik"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "bize o ölüm gelinceye kadar!»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Fakat o zaman şefaatçilerin şefaati fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "O öğütten yüz çevirirlerken şimdi ne mazeretleri var"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki ürkmüş yaban eşekleri"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "arslandan kaçmaktalar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Yok! Onlardan her kişi kendisine ayrı sahifelerle tezkireler (ihtarnameler) dağıtılmasını istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır! Doğrusu ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır, hayır! O muhakkak bir uyarıdır"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen onu düşünür"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bununla beraber Allah dilemeyince, düşünmezler; koruyacak da O´dur, bağışlayacak da"
        }
    ]
}