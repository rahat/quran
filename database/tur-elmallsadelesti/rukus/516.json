{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Andolsun iyilik yapılması için (o birbiri ardınca) gönderilenlere"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "büküp devirenlere"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "neşrederek yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "(gerçek ile batılı) seçip ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "sonra bir öğüt bırakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "gerek mazur kılmak gerekse uyarmak için olsun"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "elbette size va´d olunan şey muhakkak meydana gelecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Hani o yıldızlar silindiği vakit"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "o gök kubbe açıldığı vakit"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "dağlar savrulduğu vakit"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "peygamberler bekleme yerlerine vardırıldığı vakit (kıyamet günü)"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "bunlar hangi güne ertelenmiştir"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Ayırım gününe"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Ayırım gününün ne olduğunu bilir misin"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Önceki toplulukları helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra arkalarına takacağız geridekileri"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Biz suçluları öyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Yaratmadık mı sizi hor bir sudan"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu güvenli bir yere (rahme) koyduk"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belirli bir vakte değin"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Demek ki ölçmüşüz, demek ki Biz ne güzel güçlüleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Yeryüzünü bir tokat (toplanma yeri) yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Gerek diriler gerekse ölüler için"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve orada, oturaklı yumru yumru dağlar oturtup size tatlı su sunmadık mı"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Haydi boşalıp (gidin) o yalan dediğinize"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "haydi boşalın (gidin) bir üç çatallı (üç kola ayrılmış) gölgeye"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "ne gölgelendirir, ne de alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Çünkü o öyle kıvılcımlar atar ki, her biri bir saray gibi"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sanki sarı hopalar (erkek develer) gibi"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugün onların nutukları tutulacağı gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "İzin de verilmez ki, özür dileyeler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gün yalan diyenlerin vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "İşte bu o ayırt etme günüdür; topladık sizi ve öncekileri"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Bir fenniniz (çareniz) varsa beni atlatın"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gün yalan diyenlerin vay haline"
        }
    ]
}