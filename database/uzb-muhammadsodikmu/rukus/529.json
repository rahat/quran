{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Олий қадар бўлган Роббинг исмини поклаб ёд эт"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "У яратган ва мутаносиб қилган зотдир"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "У ўлчовли қилган ва ҳидоятга бошлаган зотдир"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "У ўт-ўланни чиқарган зотдир"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Бас, У уни қорайган хашак қилган зотдир"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Биз сенга қироат қилдирамиз, бас, эсдан чиқармайссан"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Магар Аллоҳ хоҳлаганини. Албатта, У ошкорни ҳам, махфий нарсани ҳам биладир"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ва сени осон йўлга муяссар қилармиз"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Бас, агар эслатиш манфаат берса, эслатгин"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Албатта, қўрққан эсга оладир"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ва бадбахт ундан четда бўладир"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "У катта оловга кирадир"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Сўнгра унинг ичида ўлмай ҳам, тирилмай ҳам қоладир"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Батаҳқиқ, ким пок бўлса, ютуқ топадир"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ва Роббиси исмини зикр қилса ва намоз ўқиса ҳамдир"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Лекин, сизлар дунё ҳаётини устун қўясизлар"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ҳолбуки, охират яхшироқ ва боқийроқдир"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Албатта, бу аввалги саҳифаларда бордир"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Иброҳим ва Мусо саҳифаларидадир"
        }
    ]
}