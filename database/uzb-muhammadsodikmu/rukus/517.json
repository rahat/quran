{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Албатта тақводорлар соялар ва булоқлардадир"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ва ўзлари хоҳлаган мевалардадир"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Енглар ва ичинглар, ош бўлсин. Қилган амалларингиз сабабидандир"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Албатта, Биз муҳсинларни шундай мукофотлармиз"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Ўшал кунда ёлғонга чиқарувчиларга вайл бўлсин"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Енглар ва мазза қилинглар, озгинагина. Албатта, сизлар гуноҳкорсизлар"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Ўшал кунда ёлғонга чиқавурчиларга вайл бўлсин"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Ва агар уларга рукуъ қилинглар дейилса, рукуъ қилмаслар"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Ўшал кунда ёлғонга чиқарувчилварга вайл бўлсин"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Бас, ундан кейин, қайси сўзга ишонарлар"
        }
    ]
}