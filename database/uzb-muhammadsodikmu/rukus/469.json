{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Воқеа воқеъ бўлганда"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Унинг воқеъ бўлишини ёлғон қилувчи (жон) йўқдир"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "У ҳам пастлатувчи, ҳам кўтарувчидир"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Қачонки ер қаттиқ ларзага келганда"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Тоғлар майдаланиб, титилганда"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Бас, улар тарқалган чанг-тўзонга айланганда"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ва сизлар уч тоифа бўлгангда"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Ўнг тараф эгалари. Ўнг тараф эгалари не(саодатлилар)дир"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ва чап тараф эгалари. Чап тараф эгалари не(бадбахтлар)дир"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ва пешқадамлар, пешқадамлар"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Ана ўшалар, (Аллоҳга) яқин бўлганлар"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Сернеъмат жаннатлардалар"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Аввалгилардан кўпгина жамоатлар"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Ва охиргилардан оздирлар"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Тўқима сўриларидалар"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Бир-бирларига рўбарў бўлиб, ёнбошлаган ҳолларидалар. (Яъни, пешқадамлар жаннат дуру-ёқутларни аралаш қилиб тўқилган сўриларда бир-бирларига қараб, ёнбошлаб-ястаниб роҳатланишар экан)"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Атрофларида мангу ёш йигитлар айланиб юрурлар"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Оқар чашма (майи тўлатилган) қадаҳлар, кўзалар ва косалар билан"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ундан бош оғриғи ҳам, маст ҳам бўлмаслар"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ва улар хоҳлаган мевалар билан"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Иштаҳалари тусаган қуш гўшти билан"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Яна кўзи гўзал ҳурлар бор"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Мисоли яширилган дур"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Булар, қилган амалларнинг мукофотидур"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Улар у ерда беҳуда, гуноҳ сўзларни эшитмаслар"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Фақат «Салом, Салом» дейилганини (эшитарлар). (Бир-бирларига салом берадилар, уларга фаришталар ҳам салом берадилар. Аллоҳнинг саломи ҳам етказиб турилади)"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ўнг тараф эгалари. Ўнг тараф эгалари не(саодатлилар)дир"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Улар тиконсиз сидрзорлардадир. (Сидр-ҳушбўй ҳидли бута бўлиб, араблар уни ҳиди учун яхши кўрар эканлар. Аммо тикани жуда кўп бўларкан)"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Сермева бананзорлардадир"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Ва ёйилган соялардадир"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Оқар сувлардадир"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Сероб мевалардадир"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Тугамайдиган ва ман қилинмайдиганлардадир"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Баланд-баланд кўрпачалардадир"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Албатта, Биз у(ҳурлар)ни дафъатан, хос қилиб, яратдик"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Бас, уларни бокиралар қилдик"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Тенгдош маҳбубалар қилдик"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ўнг тараф эгалари учун"
        }
    ]
}