{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Воқеа воқеъ бўлганда"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Унинг воқеъ бўлишини ёлғон қилувчи (жон) йўқдир"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "У ҳам пастлатувчи, ҳам кўтарувчидир"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Қачонки ер қаттиқ ларзага келганда"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Тоғлар майдаланиб, титилганда"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Бас, улар тарқалган чанг-тўзонга айланганда"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ва сизлар уч тоифа бўлгангда"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Ўнг тараф эгалари. Ўнг тараф эгалари не(саодатлилар)дир"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ва чап тараф эгалари. Чап тараф эгалари не(бадбахтлар)дир"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ва пешқадамлар, пешқадамлар"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Ана ўшалар, (Аллоҳга) яқин бўлганлар"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Сернеъмат жаннатлардалар"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Аввалгилардан кўпгина жамоатлар"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Ва охиргилардан оздирлар"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Тўқима сўриларидалар"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Бир-бирларига рўбарў бўлиб, ёнбошлаган ҳолларидалар. (Яъни, пешқадамлар жаннат дуру-ёқутларни аралаш қилиб тўқилган сўриларда бир-бирларига қараб, ёнбошлаб-ястаниб роҳатланишар экан)"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Атрофларида мангу ёш йигитлар айланиб юрурлар"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Оқар чашма (майи тўлатилган) қадаҳлар, кўзалар ва косалар билан"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ундан бош оғриғи ҳам, маст ҳам бўлмаслар"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Ва улар хоҳлаган мевалар билан"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Иштаҳалари тусаган қуш гўшти билан"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Яна кўзи гўзал ҳурлар бор"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Мисоли яширилган дур"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Булар, қилган амалларнинг мукофотидур"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Улар у ерда беҳуда, гуноҳ сўзларни эшитмаслар"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Фақат «Салом, Салом» дейилганини (эшитарлар). (Бир-бирларига салом берадилар, уларга фаришталар ҳам салом берадилар. Аллоҳнинг саломи ҳам етказиб турилади)"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ўнг тараф эгалари. Ўнг тараф эгалари не(саодатлилар)дир"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Улар тиконсиз сидрзорлардадир. (Сидр-ҳушбўй ҳидли бута бўлиб, араблар уни ҳиди учун яхши кўрар эканлар. Аммо тикани жуда кўп бўларкан)"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Сермева бананзорлардадир"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Ва ёйилган соялардадир"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Оқар сувлардадир"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Сероб мевалардадир"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Тугамайдиган ва ман қилинмайдиганлардадир"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Баланд-баланд кўрпачалардадир"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Албатта, Биз у(ҳурлар)ни дафъатан, хос қилиб, яратдик"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Бас, уларни бокиралар қилдик"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Тенгдош маҳбубалар қилдик"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ўнг тараф эгалари учун"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Улар аввалгилардан кўпгина жамоатлардир"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Кейингилардан ҳам кўпгина жамоатлардир"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Ва чап тараф эгалари. Чап тараф эгалари не(бадбахтлар)дир"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Улар ўт шамол ва қайноқ сувдадирлар"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Қоп-қора тутундан бўлган соядадирлар"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Салқин ҳамэмас, фойдаии ҳам"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Албатта улар бундан олдин ҳой-ҳавасга берилганлардан эдилар"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Ва мудом катта гуноҳ ишлар қилар эдилар"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ва «Биз ўлиб, тупроққа ва суякка айланганимиздан кейин қайта тирилтриламизми"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Аввалги оталаримиз ҳам-а?!» дер эдилар"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "Айтгил: «Албатта, аввалгилар ва охиргилар"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Маълум кунга белгиланган вақтда албатта тўпланувчилар»"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Сўнгра, сиз эй адашганлар, ёлғонга чиқарувчилар"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Албатта, заққум дарахтидан еювчисизлар"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Бас, ундан қоринларни тўлдирувчисизлар"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Бас, устидан ўта қайноқ сувдан ичувчисизлар"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Бас, чанқоқ туядек ичувчисизлар"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Уларнинг қиёмат кунидаги зиёфатлари мана шу"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Биз сизларни яратганимиз, ишонсаларинг-чи"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Ўзингиз чиқарадиган манийни ўйлаб кўринг-а"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Уни сизлар яратасизми ёки Биз яратувчимизми"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Орангиздаги ўлимни Биз белгилаганмиз ва Биз ожиз эмасмиз"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Сизнинг ўрнингизга сизга ўхшашларни алмаштиришдан ва сизларни ўзингиз билмайдиган ҳолда яратишдан"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Ва дарҳақиқат, аввалги яратилишини билдингиз-ку, эсласаларингиз-чи"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ўзингиз экаётган нарсани ўйлаб кўринг-а"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Уни сиз ундирасизми ёки Биз ундирувчимизми"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Агар хоҳласак, Биз уни қуруқ чўпга айлантириб қўямиз. Сизлар эса надоматда ажабланиб"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "«Албатта, биз зиён кўрганлармиз"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Балки маҳрум бўлганлармиз», (дейсиз)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ўзингиз ичадиган сувни ўйлаб кўринг-а"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Уни булутлардан сиз туширасизми ёки Биз тушурувчимизми"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Агар хоҳласак, Биз уни шўр қилиб қўямиз. Шукр қилсангиз-чи"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Ўзингиз ёқадиган оловни ўйлаб кўринг-а"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Унинг дарахтини сиз яратгансизми ёки Биз яратувчимизми"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Биз у(олов)ни эслатма ва йўловчилар учун манфаъат қилиб қўйдик"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Бас, улуғ Роббинг исмини поклаб ёд эт! (Мазкур неъматларнинг эгасини таниган инсон Улуғ Аллоҳ таолога тасбиҳ айтиб, ибодат қилишга ўтади)"
        }
    ]
}