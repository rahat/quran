{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Shì yǐ jí chè de,"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "qīng yè de,"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "bēnchí de,"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "xiānqū de,"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "juécè de,"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "dāng zhèndòng zhě zhèndòng,"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "ér xù fà zhě xù fà zhī rì,"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "zài nà rì, xǔduō xīn jiāng tǎntèbù'ān,"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "xǔduō yǎn jiāng bù gǎn yǎngshì."
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Tāmen shuō:`Wǒmen bìdìng fùyuán ma?"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Nà shì zài wǒmen yǐbiànchéng xiǔ gǔ de shíhòu ma?'"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Tāmen shuō:`Ránzé, nà shì yīcì kuī shé de fùyuán.'"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Nà zhǐshì yīcì hǒushēng,"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "tāmen hūrán zài dìmiàn zhī shàng."
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Mù sà de gùshì yǐ láilín nǐle ma?"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Dāngshí, tā de zhǔ, céng zài shèng gǔ dù wā zhōng zhàohuàn tā shuō:"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "`Nǐ dào fǎlǎo nàlǐ qù ba! Tā què shì bèinì de."
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Nǐ duì tā shuō:“Nǐ yuànyì chéngwéi chúnjié de rén ma?"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Nǐ yuànyì wǒ yǐndǎo nǐ rènshí nǐ de zhǔ, ér nǐ wèijù tā ma?”'"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Tā bǎ nà zuìdà de jīxiàng zhāoshìle fǎlǎo,"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "dàn tā fǒurèn, érqiě wéikàng."
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Ránhòu, tā zhuǎnshēn ér bēnzǒu."
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Yúshì, zhàojí mínzhòng, érqiě hǎnjiào,"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "shuō:`Wǒ shì nǐmen de zhìzūn de zhǔ.'"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Gù zhēnzhǔ yǐhòu shì hé jīnshì de xíngfá chéngzhì tā."
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Duìyú wèijù de rénmen, cǐ zhōng què yǒu yīzhǒng jiànjiè."
        }
    ]
}