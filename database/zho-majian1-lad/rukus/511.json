{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Zhēn de, yǐ yuèliàng méngshì,"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Yǐ shìqù de hēiyè méngshì,"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "yǐ xiǎn zhào dí límíng méngshì,"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "huǒ yù què shì yīgè dànàn,"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "kěyǐ jǐnggào rénlèi,"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "jǐnggào nǐmen zhōng yù qiánjìn zhě huò yù hòutuì zhě;"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "gèrén jiāng yīn zìjǐ de yíng móu ér zuò dǐyā,"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "wéi xìngfú de rénmen chúwài."
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Tāmen zài lèyuán zhōng hùxiāng xúnwèn,"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "wèn fànzuì rénmen de qíngzhuàng,"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "`nǐmen wèishéme duò rù huǒ yù ne?'"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Tāmen shuō:`Wǒmen méiyǒu lǐbài,"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "yě méiyǒu jìpín,"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "wǒmen yǔ wàngyán de rénmen yīdào wàngyán,"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "wǒmen fǒurèn bàoyìng rì,"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "yīzhí dào sǐwáng jiànglínliǎo wǒmen.'"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Shuō qíng zhě de shuō qíng, jiāng wúyì yú tāmen."
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Tāmen zěnme tuìbì zhè jiàoxùn ne?"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Tāmen hǎoxiàng yīqún jīnghuāng de lǘzi,"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "gāng táobìle yī zhī shīzi yīyàng."
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Bùrán, tāmen zhōng de měi gè rén dōu xīwàng huòdé yīxiē zhǎnkāi de tiān jīng."
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Jué bùrán, tāmen bù wèijù hòushì!"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Zhēn de, zhè “gǔlánjīng” què shì yīgè jiàohuì!"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Shuí yuànyì, shuí jìyì tā,"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "tāmen zhǐ yīn zhēnzhǔ de yìyù ér jìyì tā. Tā shì yīng shòu jìngwèi de, tā shì yí yú shè yòu de."
        }
    ]
}