{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ninahaza izina ry’Umuremyi wawe mutagatifu"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Uwaremye ibintu vyose nukubi ringaniza"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Nukugerageza kimwe kukindi, nukukirongora"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Niya nagishije ivyakatsi vyose"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Hanyuma nukuyigira ivyumye n’ibara ryirabura"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Tuzo kwigisha kandi ntuzo kwibagira"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Mugabo Imana ibishatse niyo ifise ubumenyi bw’ibiboneka hamwe nibita boneka"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Natwe tuzo kworohereza idini ryoroshe"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Rero nubashikirize ubwo butumwa nibwaba bushoboka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Ntankeka azokwibuka uwutinya Imana yiwe y’ukuri"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Uwufise ibihano vyinshi azoba kure y’ubwo butumwa"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Uwuzo kwinjira mu muriro udahera muniniya cane"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Hanyuma muri uwo muriro udahera ntazopfa canke ntazoba muzima"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Mu vy’ukuri aramaze kuronka intsinzi uwisukuye n’amabi"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Akibuka izina ry’Umuremyi wiwe n’ugusenga"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Mugabo mwebwe mukunda cane ubuzima bwo ngaha kw’Isi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Mugihe ubuzima bwo mw’ijuru aribwo bwiza gusumba kandi buramba"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Mu vy’ukuri ibi vyose, biri mu bitabu vy’akahise. hamwe n’intumwa y’Imana"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibitabu vy’intumwa y’Imana Ibrahimu (iii) hamwe n’intumwa y’Imana Mussa (iii)"
        }
    ]
}