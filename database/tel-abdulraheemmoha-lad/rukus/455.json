{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "dum'mu eguravēsē vāṭi (gālula) sākṣigā"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "mariyu (nīṭi) bhārānni mōsē (mēghāla)"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "mariyu samudranlō sulabhaṅgā tēliyāḍē (ōḍala)"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "mariyu (āyana) ājñatō (anugrahālanu) pan̄cipeṭṭē (dēvadūtala sākṣigā)"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "niścayaṅgā, mīku cēyabaḍḍa vāgdānaṁ satyaṁ"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "mariyu niścayaṅgā tīrpu rānunnadi"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "mārgālatō niṇḍina ākāśaṁ sākṣigā"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "niścayaṅgā, mīru bhēdābhiprāyālalō paḍi unnāru"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "(satyaṁ nuṇḍi) maralimpabaḍina vāḍē, mōsagimpabaḍina vāḍu"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "ādhāraṁ lēni abhiprāyālu galavārē nāśanaṁ cēyabaḍēvāru"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "evaraitē nirlakṣyanlō paḍi aśrad'dhagā unnārō"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "vāru ilā aḍugutunnāru: \"Tīrpudinaṁ eppuḍu rānunnadi"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "ā dinamuna, vāru agnitō dahimpabaḍatāru (parīkṣimpabaḍatāru)"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "(vāritō ilā anabaḍutundi): \"Mī parīkṣanu ruci cūḍaṇḍi! Mīru dīni korakē tondara peṭṭēvāru"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "niścayaṅgā, daivabhīti galavāru celamalu gala svargavanālalō uṇṭāru"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "tama prabhuvu tamaku prasādin̄cina vāṭitō santōṣapaḍutū! Niścayaṅgā vāru antaku pūrvaṁ sajjanulai uṇḍēvāru"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "vāru rātrivēḷalō cālā takkuvagā nidrapōyēvāru"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "mariyu vāru rātri civari ghaḍiyalalō kṣamāpaṇa vēḍukunē vāru"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "mariyu vāri sampadalō yācin̄cē vāriki mariyu āvaśyakata galavāriki hakku uṇṭundi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Mariyu bhūmilō kūḍā nam'mēvāri koraku ennō nidarśanālu (āyāt) unnāyi"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "mariyu svayaṅgā mīlō kūḍā unnāyi. Ēmī? Mīru cūḍalērā"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "mariyu ākāśanlō mī jīvanōpādhi mariyu mīku vāgdānaṁ cēyabaḍinadi undi"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "kāvuna bhūmyākāśāla prabhuvu sākṣigā! Niścayaṅgā, idi satyaṁ; ē vidhaṅgānaitē mīru māṭlāḍagaligēdi (satyamō)"
        }
    ]
}