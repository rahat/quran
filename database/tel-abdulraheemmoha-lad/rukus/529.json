{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatuḍaina nī prabhuvu nāmānni stutin̄cu"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "āyanē (pratidānini) sr̥ṣṭin̄cāḍu mariyu tagina pramāṇanlō rūpondin̄cāḍu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "mariyu āyanē dāni prakr̥ti lakṣaṇālanu nirṇayin̄cāḍu, mariyu mārgaṁ cūpāḍu"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Mariyu āyanē paccikanu molipimpa jēśāḍu"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "marala dānini nallani cettācedāraṅgā cēśāḍu"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "mēmu nīcēta (khur'ān nu) cadivimpa jēstāmu, taruvāta nīvu (dānini) maracipōvu"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāh kōrindi tappa! Niścayaṅgā, bahiraṅgaṅgā unnadī mariyu gōpyaṅgā unnadī annī āyanaku bāgā telusu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "mariyu mēmu nī mārgānni sulabhaṁ cēyaḍāniki nīku saulabhyānni kalugajēstāmu"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "kāvuna nīvu hitōpadēśaṁ cēstū uṇḍu; vāriki hitōpadēśaṁ lābhadāyakaṁ kāvaccu"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(allāh ku) bhayapaḍē vāḍu hitōpadēśānni svīkaristāḍu"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "mariyu daurbhāgyuḍu dāniki dūramai pōtāḍu"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "alāṇṭi vāḍē ghōramaina narakāgnilō paḍi kālutāḍu"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "appuḍu, ataḍu andulō cāvanū lēḍu, bratakanū lēḍu"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "suśīlatanu (pavitratanu) pāṭin̄cē vāḍu tappaka sāphalyaṁ pondutāḍu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "mariyu tana prabhuvu nāmānni smaristū, namāj cēstū uṇḍēvāḍu"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "alā kādu! Mīru aihika jīvitāniki prādhān'yata nistunnāru"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "kāni paralōka jīvitamē mēlainadi mariyu cirakālamuṇḍēdi"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "niścayaṅgā, ī viṣayaṁ pūrvagranthālalō (vrāyabaḍi) undi"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ibrāhīm mariyu mūsālapai (avatarimpajēyabaḍina) granthālalō"
        }
    ]
}