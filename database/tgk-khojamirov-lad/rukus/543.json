{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Qori'ah, rūzest, ki dilho az havli on kūʙida meşavand"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Cist qori'ah"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Va tu cī donī, ki qori'ah cist"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Rūzest, ki mardumon hamcun parvonahoi parokanda xohand ʙud"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Va kūhho monandi paşmi zadaşuda ʙo halloçī pareşon karda şuda xohand şud"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Ammo har kasero pallai nekihoi tarozujaş vaznin ʙoşad"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "pas ū dar çannat dar zindagii pisandida ʙoşad"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Va ammo har kasero saʙuk şud pallai nekihoi tarozujaş"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "çojgohaş dar hovijah ast"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Va tu cī donī, ki hovijah cist"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Otaşi ʙuzurg va ʙisjor garmu sūzonest"
        }
    ]
}