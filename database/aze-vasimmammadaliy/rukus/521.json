{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "(Ey kafirlər!) Sizi yaratmaq çətindir, yoxsa göyü ki (Allah) onu yaratdı"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Qübbəsini ucaltdı, düzəldib nizama saldı"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecəsini qaranlıq, gündüzünü işıqlı etdi"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra da yeri döşəyib (yayıb) düzəltdi (üstündə gəzmək və yaşamaq üçün onu yararlı hala saldı)"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu və otlağını çıxartdı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "(Orada) dağları yerləşdirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "(Bütün bunlar) sizin və heyvanlarınızın istifadəsi üçündür"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "O böyük bəla (qiyamət) gələndə"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gün insan nələr etdiyini (dünyadakı bütün yaxşı, pis əməllərini) yadına salacaqdır"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cəhənnəm də hər görənə görünəcəkdir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Kim (dünyada) azğınlıq etmişsə"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dünyanı (axirətdən) üstün tutmuşsa"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Şübhəsiz ki, onun məskəni Cəhənnəmdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Amma kim (qiyamət günü) Rəbbinin hüzurunda durmaqdan qorxmuş və nəfsinə istəyini (şəfvəti) qadağan etmişsə"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Həqiqətən, onun yurdu Cənnətdir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "(Ya Peyğəmbər! Müşriklər) səndən o saatın nə vaxt gələcəyi (qiyamətin nə vaxt qopacağı) barəsində soruşarlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sən onu (onun vaxtını) nə bilirsən"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onu sonuna qədər (bütün təfərrüatı ilə) bilmək ancaq sənin Rəbbinə məxsusdur"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sən ancaq ondan (qiyamətdən) xəbərdar edib çəkindirənsən"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu (qiyaməti) gördükləri gün (dünyada və ya qəbir evində) yalnız bir axşam, yaxud bir səhər qaldıqlarını sanacaqlar"
        }
    ]
}