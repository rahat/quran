{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Ürəkləri dəhşətə salan qiyamət"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nədir qiyamət"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Sən nə bilirsən (haradan bilirsən) ki, nədir qiyamət"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar kəpənək kimi ətrafa səpələnəcək (çəyirtkə kimi bir-birinə qatışacaq)"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar isə didilmiş yun kimi olacaqdır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "(O gün) tərəzisi ağır gələn (yaxşı əmələri pis əməllərdən çox olan) kimsə"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "(Cənnətdə) xoş güzəran içində olacaq"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Tərəzisi yüngül gələn (yaxşı əməlləri pis əməllərdən az olan) kimsənin isə"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Məskəni Haviyə (Cəhənnəmin dibi) olacaqdır"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Sən nə bilirsən ki, o (Haviyə) nədir"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O çox qızmar bir atəşdir"
        }
    ]
}