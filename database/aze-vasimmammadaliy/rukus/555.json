{
    "rukus": [
        {
            "chapter": 113,
            "verse": 1,
            "text": "(Ya Peyğəmbər!) De: “Pənah aparıram sübhün Rəbbinə"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yaratdıqlarının (insanların, cinlərin, vəhşi heyvanların) şərindən"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Zülmətə bürünməkdə olan gecənin (və ya: batan ayın, ziyası sönən ulduzların) şərindən"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "(Ovsun oxuyub) düyünlərə üfürən (yaxud: cadu edib iplərə düyün vuran) qadınların şərindən"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Və bir də paxıllığı tutanda paxılın şərindən!”"
        }
    ]
}