{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "(Hic degilse kendilerini) Kureys’i ‘bir araya getirip anlastırdıgı’"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kıs yolculugunda onları (guvenlige kavusturdugu ya da baskalarıyla) ısındırıp yakınlastırdıgı icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Su Ev (Ka’be’n)in Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Ki O, kendilerini aclıktan (kurtarıp) doyuran ve korkudan guvenlige kavusturandır"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste yetimi itip-kakan"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmayı tesvik etmeyen odur"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Iste (su) namaz kılanların vay haline"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ki onlar, namazlarında yanılgıdadırlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gosteris yapmaktadırlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve ‘ufacık bir yardımı (veya zekatı) da engellemektedirler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Suphesiz, Biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Su halde Rabbin icin namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Dogrusu, asıl ebter (soyu kesik) olan sana kin duyandır"
        }
    ]
}