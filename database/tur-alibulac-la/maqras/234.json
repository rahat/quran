{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Surat astı ve yuz cevirdi"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine o kor geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nerden biliyorsun; belki o, temizlenip-arınacak"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya ogut alacak; boylelikle bu ogut kendisine yarar saglayacak"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Fakat kendini mustagni goren (hicbir seye ihtiyacı olmadıgını sanan) ise"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Iste sen, onda 'yankı uyandırmaya’ calısıyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa, onun temizlenip-arınmasından sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama kosarak sana gelen ise"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ki o, 'ici titreyerek korkar' bir durumdadır"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen ona aldırıs etmeden oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır; cunku o (Kur'an), bir oguttur"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen, onu 'dusunup-ogut alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O (Kur'an), 'serefli-ustun' sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yuceltilmis, tertemiz (mutahhar) kılınmıs"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Katiplerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "(Ki onlar,) Ustun degerli, 'iyilik ve durustluk sembolu"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan, ne kadar nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(Allah) Onu hangi seyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan yarattı da onu 'bir olcuyle bicime soktu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylastırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurdu, boylece kabre gomdurdu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra diledigi zaman onu diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır; ona (Allah'ın) emrettigini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de insan, yedigine bir bakıversin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz suphesiz, suyu akıttıkca akıttık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra yeri yardıkca yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Boylece onda taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Uzumler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler, hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Boyları birbiriyle yarısan ve icice girmis agaclı bahceler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklıklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Size ve hayvanlarınıza bir yarar (meta) olmak uzere"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Fakat 'kulakları patlatırcasına olan o gurleme' geldigi zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Kisi o gun, kendi kardesinden kacar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Esinden ve cocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun, onlardan her birisinin kendine yetecek bir isi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gun, oyle yuzler vardır ki apaydınlıktır"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Guler ve sevinc icindedir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Ve o gun, oyle yuzler de vardır ki uzerini toz burumustur"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Bir karartı sarıp-kaplamıstır"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Iste onlar da, kafir, facir olanlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes, koreltildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, bulanıklasıp-dokuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar, yurutuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer, kendi basına terk edildigi zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi-hayvanlar, toplandıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler, tutusturuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler, birlestigi zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Ve 'diri diri topraga gomulen kızcagıza' soruldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi suctan dolayı olduruldu"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) acıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok, sıyrılıp-yuzuldugu zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem atesi cılgınca kızıstırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet de yakınlastırıldıgı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "(Artık her) Nefis, neyi hazırladıgını bilip-ogrenmistir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Artık hayır; yemin ederim (gunduz) sinip (gece) donen (gezegen)lere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Bir akıs icinde yerini alanlara"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya ilk basladıgı zaman, geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ve nefes almaya basladıgı zaman, sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Suphesiz o (Kur'an), ustun onur sahibi bir elcinin gercekten (Allah'tan getirdigi) sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "(Bu elci,) Bir guc sahibidir, arsın sahibi Katında sereflidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Ona itaat edilir, sonra guvenilirdir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin sahibiniz bir deli degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o (peygamber), onu apacık bir ufukta gormustur"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb (haberlerin)e karsı (soylediklerinden dolayı) suclanamaz (ya da cimrilikte bulunup kıskanclık yapmaz)"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O (Kur'an) da kovulmus seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Su halde, siz nereye kacıp-gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O (Kur'an), alemler icin yalnızca bir zikirdir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dosdogru bir yon (istikamet) tutturmak dileyenler icin"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi olan Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}