{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Vakıa (kesin bir gercek olan kıyamet) vuku buldugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun vukuuna (gerceklesmesine artık) yalan diyecek yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O asagılatıcı, yucelticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer, siddetli bir sarsıntıyla sarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve daglar darmadagın olup ufalandıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz duman halinde dagılıp-savruldugu"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Iste o \"Ashab-ı Meymene\", ne (kutludur o) \"Ashab-ı Meymene"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ashab-ı Mes'eme\" ne (mutsuz ve ugursuzdur o) \"Ashab-ı Mes'eme"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Yarısıp one gecenler de, one gecmis onculerdir"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste onlar, yakınlastırılmıs (mukarreb) olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nimetlerle-donatılmıs cennetler icinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bircogu gecmis (ummet)lerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Ozenle islenmis mucevher' tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı yaslanmıslardır"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Cevrelerinde olumsuzluge ulasmıs gencler donup dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagından (doldurulmus) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ki bundan ne baslarını bir agrı tutar, ne de kendilerinden gecip akılları celinir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Arzulayıp-sececekleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus eti"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına bir karsılık olmak uzere (onlara sunulur)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada, ne 'sacma ve bos bir soz' isitirler, ne gunaha sokma"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Yalnızca bir soz (isitirler:) \"Selam, selam"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ashab-ı Yemin\", ne (kutludur o) \"Ashab-ı Yemin"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Yuklu dalları bukulmus kiraz (agacları)"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Ustuste dizili meyveleri sarkmıs muz agacları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Yayılıp-uzanmıs golgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Durmaksızın akan su(lar)"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve (daha) bircok meyveler arasında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Kesilip-eksilmeyen ve yasaklanmayan (meyveler)"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yukseklere-kurulmus dosekler (sedirler)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gercek su ki, Biz onları yeni bir insa (yaratma) ile insa edip-yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları hep bakireler olarak kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine sevgiyle tutkun (ve) hep yasıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Ashab-ı Yemin\" olanlar icin"
        }
    ]
}