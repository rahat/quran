{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Her yanı yaygın olarak kusatacak olan) Kıyametin haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun, oyle yuzler vardır ki, 'zillet icinde asagılanmıstır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısmıs, bosuna yorulmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir atese yollanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir kaynaktan icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin (zehirli olan) dari' dikeninden baska bir yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne doyurup-semirtir, ne aclıktan korur"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun, oyle yuzler de vardır ki, nimette (engin bir mutluluk icinde)dirler"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Harcadıgı-cabadan dolayı hosnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orda anlamsız bir soz isitmez"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orda 'durmaksızın akan' bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orda 'yukseklerde kurulmus, tahtlar da vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus (icecek dolu) kaplar"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizi dizi yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve serilmis yaygılar"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı o deveye; nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge, nasıl yukseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara; nasıl oturtulup-kuruldu"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere; nasıl yayılıp-dosendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık sen, ogut verip-hatırlat. Sen, yalnızca bir ogut verici-bir hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlara 'zor ve baskı' kullanacak degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en buyuk azap ile azaplandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphesiz onların donusleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları hesaba cekmek de elbette Bize aittir"
        }
    ]
}