{
    "rukus": [
        {
            "chapter": 68,
            "verse": 34,
            "text": "۞إِنَّ لِلۡمُتَّقِينَ عِندَ رَبِّهِمۡ جَنَّٰتِ اِ۬لنَّعِيمِ"
        },
        {
            "chapter": 68,
            "verse": 35,
            "text": "أَفَنَجۡعَلُ اُ۬لۡمُسۡلِمِينَ كَاَلۡمُجۡرِمِينَ"
        },
        {
            "chapter": 68,
            "verse": 36,
            "text": "مَا لَكُمۡ كَيۡفَ تَحۡكُمُونَ"
        },
        {
            "chapter": 68,
            "verse": 37,
            "text": "أَمۡ لَكُمۡ كِتَٰبࣱ فِيهِ تَدۡرُسُونَ"
        },
        {
            "chapter": 68,
            "verse": 38,
            "text": "إِنَّ لَكُمۡ فِيهِ لَمَا تَخَيَّرُونَ"
        },
        {
            "chapter": 68,
            "verse": 39,
            "text": "أَمۡ لَكُمۡ أَيۡمَٰنٌ عَلَيۡنَا بَٰلِغَةٌ إِلَىٰ يَوۡمِ اِ۬لۡقِيَٰمَةِ إِنَّ لَكُمۡ لَمَا تَحۡكُمُونَ"
        },
        {
            "chapter": 68,
            "verse": 40,
            "text": "سَلۡهُمۡ أَيُّهُم بِذَٰلِكَ زَعِيمٌ"
        },
        {
            "chapter": 68,
            "verse": 41,
            "text": "أَمۡ لَهُمۡ شُرَكَآءُ فَلۡيَاتُواْ بِشُرَكَآئِهِمۡ إِن كَانُواْ صَٰدِقِينَ"
        },
        {
            "chapter": 68,
            "verse": 42,
            "text": "يَوۡمَ يُكۡشَفُ عَن سَاقࣲ وَيُدۡعَوۡنَ إِلَى اَ۬لسُّجُودِ فَلَا يَسۡتَطِيعُونَ"
        },
        {
            "chapter": 68,
            "verse": 43,
            "text": "خَٰشِعَةً أَبۡصَٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةࣱۖ وَقَدۡ كَانُواْ يُدۡعَوۡنَ إِلَى اَ۬لسُّجُودِ وَهُمۡ سَٰلِمُونَ"
        },
        {
            "chapter": 68,
            "verse": 44,
            "text": "فَذَرۡنِي وَمَن يُكَذِّب بِّهَٰذَا اَ۬لۡحَدِيثۖ سَّنَسۡتَدۡرِجُهُم مِّنۡ حَيۡثُ لَا يَعۡلَمُونَ"
        },
        {
            "chapter": 68,
            "verse": 45,
            "text": "وَأُمۡلِي لَهُمۡۚ إِنَّ كَيۡدِي مَتِينٌ"
        },
        {
            "chapter": 68,
            "verse": 46,
            "text": "أَمۡ تَسۡـَٔلُهُمۡ أَجۡرࣰ ا فَهُم مِّن مَّغۡرَمࣲ مُّثۡقَلُونَ"
        },
        {
            "chapter": 68,
            "verse": 47,
            "text": "أَمۡ عِندَهُمُ اُ۬لۡغَيۡبُ فَهُمۡ يَكۡتُبُونَ"
        },
        {
            "chapter": 68,
            "verse": 48,
            "text": "فَاَصۡبِر لِّحُكۡمِ رَبِّكَ وَلَا تَكُن كَصَاحِبِ اِ۬لۡحُوتِ إِذۡ نَادَىٰ وَهۡوَ مَكۡظُومࣱ‏"
        },
        {
            "chapter": 68,
            "verse": 49,
            "text": "لَّوۡلَا أَن تَدَٰرَكَهُۥ نِعۡمَةࣱ مِّن رَّبِّهِۦ لَنُبِذَ بِالۡعَرَآءِ وَهۡوَ مَذۡمُومࣱ‏"
        },
        {
            "chapter": 68,
            "verse": 50,
            "text": "فَاَجۡتَبَٰهُ رَبُّهُۥ فَجَعَلَهُۥ مِنَ اَ۬لصَّٰلِحِينَ"
        },
        {
            "chapter": 68,
            "verse": 51,
            "text": "وَإِن يَكَادُ اُ۬لَّذِينَ كَفَرُواْ لَيُزۡلِقُونَكَ بِأَبۡصٰ۪رِهِمۡ لَمَّا سَمِعُواْ اُ۬لذِّكۡرَ وَيَقُولُونَ إِنَّهُۥ لَمَجۡنُونࣱ‏"
        },
        {
            "chapter": 68,
            "verse": 52,
            "text": "وَمَا هُوَ إِلَّا ذِكۡرࣱ لِّلۡعَٰلَمِينَ"
        }
    ]
}