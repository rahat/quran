        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "خُذُوهُ فَاَعۡتِلُوهُ إِلَىٰ سَوَآءِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "ثُمَّ صُبُّواْ فَوۡقَ رَاسِهِۦ مِنۡ عَذَابِ اِ۬لۡحَمِيمِ"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "ذُقۡ إِنَّكَ أَنتَ اَ۬لۡعَزِيزُ اُ۬لۡكَرِيمُ"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "إِنَّ هَٰذَا مَا كُنتُم بِهِۦ تَمۡتَرُونَ"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "إِنَّ اَ۬لۡمُتَّقِينَ فِي مَقَامٍ أَمِينࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "فِي جَنَّٰتࣲ وَعُيُونࣲ‏"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "يَلۡبَسُونَ مِن سُندُسࣲ وَإِسۡتَبۡرَقࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 44,
            "verse": 54,
