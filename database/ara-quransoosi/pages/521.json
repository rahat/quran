        {
            "chapter": 51,
            "verse": 9,
            "text": "يُوفَكُ عَنۡهُ مَنۡ أُفِك"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "قُّتِلَ اَ۬لۡخَرَّٰصُونَ"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "اَ۬لَّذِينَ هُمۡ فِي غَمۡرَةࣲ سَاهُونَ"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "يَسۡـَٔلُونَ أَيَّانَ يَوۡمُ اُ۬لدِّينِ"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "يَوۡمَ هُمۡ عَلَى اَ۬لنّ۪ارِ يُفۡتَنُونَ"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ذُوقُواْ فِتۡنَتَكُمۡ هَٰذَا اَ۬لَّذِي كُنتُم بِهِۦ تَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "إِنَّ اَ۬لۡمُتَّقِينَ فِي جَنَّٰتࣲ وَعُيُونٍ"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "ءَاخِذِينَ مَا ءَاتَىٰهُمۡ رَبُّهُمۡۚ إِنَّهُمۡ كَانُواْ قَبۡلَ ذَٰلِكَ مُحۡسِنِينَ"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "كَانُواْ قَلِيلࣰ ا مِّنَ اَ۬لَّيۡلِ مَا يَهۡجَعُونَ"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "وَبِالۡأَسۡح۪ارِ هُمۡ يَسۡتَغۡفِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "وَفِي أَمۡوَٰلِهِمۡ حَقࣱّ لِّلسَّآئِلِ وَاَلۡمَحۡرُومِ"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "وَفِي اِ۬لۡأَرۡضِ ءَايَٰتࣱ لِّلۡمُوقِنِينَ"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "وَفِي أَنفُسِكُمۡۚ أَفَلَا تُبۡصِرُونَ"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "وَفِي اِ۬لسَّمَآءِ رِزۡقُكُمۡ وَمَا تُوعَدُونَ"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "فَوَرَبِّ اِ۬لسَّمَآءِ وَاَلۡأَرۡضِ إِنَّهُۥ لَحَقࣱّ مِّثۡلَ مَا أَنَّكُمۡ تَنطِقُونَ"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "هَلۡ أَتَىٰكَ حَدِيث ضَّيۡفِ إِبۡرَٰهِيمَ اَ۬لۡمُكۡرَمِينَ"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "إِذ دَّخَلُواْ عَلَيۡهِ فَقَالُواْ سَلَٰمࣰ اۖ قَالَ سَلَٰمࣱ قَوۡمࣱ مُّنكَرُونَ"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "فَرَاغَ إِلَىٰ أَهۡلِهِۦ فَجَآءَ بِعِجۡلࣲ سَمِينࣲ‏"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "فَقَرَّبَهُۥ إِلَيۡهِمۡ قَالَ أَلَا تَاكُلُونَ"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "فَأَوۡجَسَ مِنۡهُمۡ خِيفَةࣰۖ قَالُواْ لَا تَخَفۡۖ وَبَشَّرُوهُ بِغُلَٰمٍ عَلِيمࣲ‏"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "فَأَقۡبَلَتِ اِ۪مۡرَأَتُهُۥ فِي صَرَّةࣲ فَصَكَّتۡ وَجۡهَهَا وَقَالَتۡ عَجُوزٌ عَقِيمࣱ‏"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "قَالُواْ كَذَٰلِك قَّال رَّبُّكِۖ إِنَّه هُّوَ اَ۬لۡحَكِيمُ اُ۬لۡعَلِيمُ"
        }
    ]
