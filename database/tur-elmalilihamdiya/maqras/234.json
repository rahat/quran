{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber) Yüzünü ekşitti ve döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine âmâ geldi, diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin, belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya öğüt belleyecek de öğüt ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama buna ihtiyaç hissetmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun temizlenmemesinden sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama sana can atarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allah'tan korkarak gelmişken"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onunla ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır hayır, sakın. Çünkü o Kur'ân bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen onu düşünür"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, değerli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüksek tutulan tertemiz sahifelerde"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Yazıcıların ellerindedir"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Değerli, iyi yazıcıların"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "O kahrolası insan, ne nankör şey"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "O yaratan onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan, onu yarattı da biçime koydu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolunu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü de kabre koydurdu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği vakit onu tekrar diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır hayır, doğrusu o, hiç Allah'ın emrini tam yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de o insan yiyeceğine baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz o suyu bol bol döktük"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı nasıl da yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Bu suretle orada ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinlikler, hurmalıklar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "İri ve sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler, çayırlar bitirdik"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Siz ve hayvanlarınız faydalansın diye"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sağır eden o gürültü geldiğinde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gün kişi kaçar, kardeşinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve oğullarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "Onlardan her birinin o gün başından aşan işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Yüzler var ki, o gün parıl parıl"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güler, sevinir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yüzler de var ki, o gün tozlanmış"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onları karanlık bürümüş"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlardır kâfirler, haktan sapanlar"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş katlanıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar bulandığında"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kıyılmaz mallar bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateşlendiğinde (suları çekilip, volkanlar halinde ateş püskürdüğünde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eşleştirildiğinde (iyiler iyilerle, kötüler kötülerle bir araya toplandığında)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri toprağa gömülen kıza sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günahtan dolayı öldürüldü?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök sıyrılıp açıldığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmiş olduğunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Şimdi yemin ederim o sinenlere (gündüzleri gözden kaybolan yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yuvasına gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yöneldiği an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendiği (ağardığı) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuşkusuz o Kur'an, değerli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi güçlüdür, Arş'ın sahibinin yanında çok itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, güvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınızı cin çarpmış değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i açık ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında cimri de değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmuş bir şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hâl böyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, âlemler için öğütten başka bir şey değildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "İçinizden doğru gitmek isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Âlemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}