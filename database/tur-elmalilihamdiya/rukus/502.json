{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Bir isteyen, olacak azabı istedi"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Kâfirler için onu savacak yok"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "O, derece ve makamların sahibi Allah'tandır"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve Ruh miktarı ellibin yıl süren bir gün içinde ona çıkar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "O halde güzel bir sabır ile sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Çünkü onlar onu uzak görürler"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın görüyoruz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gün gök erimiş bir maden gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Dağlar da atılmış renkli yün gibi olur"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost dostun halini soramaz"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "Birbirlerine gösterilirler. Suçlu o günün azabından kurtulmak için fidye vermek ister; oğullarını"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "Eşini ve kardeşini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "Kendisini barındıran, içinde yetiştiği tüm ailesini"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "Ve yeryüzünde bulunanların hepsini ki, tek kendini kurtarabilsin"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Hayır, o alevlenen bir ateştir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Derileri kavurur, soyar"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Çağırır, sırtını dönüp gideni"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "Mal toplayıp kasada yığanı"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Doğrusu insan dayanıksız ve huysuz yaratılmıştır"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine kötülük dokundu mu sızlanır"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Kendisine hayır dokundu mu cimrilik eder"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak namaz kılanlar bunun dışındadır"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Onlar ki namazlarını sürekli kılarlar"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "Onların mallarında belli bir hak vardır"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "Hem isteyen için, hem de istemekten utanan yoksul için"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "Onlar ki ceza gününü tasdik ederler"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rablerinin azabından korkarlar"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Çünkü Rablerinin azabından emin olunmaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "Onlar ki ırzlarını korurlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Ancak zevcelerine ve cariyelerine karşı hariç. Çünkü onlara yaklaştıklarında kınanmazlar"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Bundan ötesini isteyenler, var ya işte onlar haddi aşanlardır"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Onlar emanetlerini ve ahitlerini gözetirler"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Şahitliklerinde dürüsttürler"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarına devam ederler"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "İşte bunlar cennetlerde ağırlanırlar"
        }
    ]
}