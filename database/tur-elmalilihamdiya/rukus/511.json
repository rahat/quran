{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Döndüğü an o geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve açtığı sıra o sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Kuşkusuz o Sekar, büyük belalardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Uyarmak için insanları"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "İçinizden ileri gitmek veya geri kalmak isteyen kimseleri"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis kendi kazancına bağlıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak amel defterleri sağından verilenler hariç"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar cennettedirler, sorup dururlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suçluların durumunu"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Nedir sizi Sekar'a sokan?\" diye"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Suçlular der ki: \"Biz namaz kılanlardan değildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksula da yedirmezdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Boş şeylere dalanlarla dalar giderdik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ceza gününü yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet bize ölüm gelip çattı"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık onlara şefaatçilerin şefaatı fayda vermez"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Şimdi o Kur'ân'dan yüz çevirirlerken ne mazeretleri var"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki onlar ürkmüş yaban eşekleri"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan kaçmaktalar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onlardan her kişi kendisine açılmış sayfalar verilmesini istiyor"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Yok, yok onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır, hayır, O kur'ân kuşkusuz bir öğüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen onu düşünür"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bununla beraber Allah dilemedikçe onlar öğüt alamazlar. Koruyacak da O'dur, bağışlayacak da"
        }
    ]
}