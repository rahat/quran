{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yüce adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp düzene koyan O'dur"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Takdir edip hidayeti gösteren O'dur"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Otlağı çıkaran"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu karamsı bir sel köpüğü haline getiren O'dur"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Bundan böyle sana Kur'ân'ı okutacağız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah'ın dilediği başkadır. Çünkü o açığı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Onun için öğüt ver, eğer öğüt fayda verirse"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Saygısı olan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Pek bedbaht olan da ondan kaçınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O ki, en büyük ateşe girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra ne ölecek onda, ne de hayat bulacaktır"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu felah buldu (günahtan) temizlenen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha hayırlı ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Kuşkusuz bu ilk sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim ve Musa'nın sahifelerinde"
        }
    ]
}