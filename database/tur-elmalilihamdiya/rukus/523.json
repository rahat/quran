{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş katlanıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar bulandığında"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Kıyılmaz mallar bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler ateşlendiğinde (suları çekilip, volkanlar halinde ateş püskürdüğünde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler eşleştirildiğinde (iyiler iyilerle, kötüler kötülerle bir araya toplandığında)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri toprağa gömülen kıza sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günahtan dolayı öldürüldü?\" diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Amel defterleri açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök sıyrılıp açıldığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes ne getirmiş olduğunu anlar"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Şimdi yemin ederim o sinenlere (gündüzleri gözden kaybolan yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yuvasına gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Yöneldiği an geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Nefeslendiği (ağardığı) an sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Kuşkusuz o Kur'an, değerli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi güçlüdür, Arş'ın sahibinin yanında çok itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Orada ona itaat edilir, güvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınızı cin çarpmış değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun o, Cebrail'i açık ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayb hakkında cimri de değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmuş bir şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hâl böyle iken, siz nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, âlemler için öğütten başka bir şey değildir"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "İçinizden doğru gitmek isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Âlemlerin Rabbi olan Allah dilemeyince, siz dileyemezsiniz"
        }
    ]
}