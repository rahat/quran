{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök çatladığı vakit"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar döküldüğü vakit"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler yarılıp akıtıldığı vakit"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına getirildiği vakit"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi önünden gönderdiğini ve neyi geri bıraktığını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! İhsanı bol Rabb'ine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yarattı, seni düzgün yapılı kılıp ölçülü bir biçim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni dilediği her hangi bir şekilde parçalardan oluşturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır hayır, siz cezayı yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa üzerinizde koruyucular var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Değerli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, siz her ne yaparsanız bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Kuşkusuz iyiler nimet içindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza günü ona girecekler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar o cehennemin gözünden kaçamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gününün ne olduğunu sen bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin nedir acaba o ceza günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün, hiç kimsenin başkası için hiçbir şeye sahip olamadığı gündür. O gün buyruk yalnız Allah'ındır"
        }
    ]
}