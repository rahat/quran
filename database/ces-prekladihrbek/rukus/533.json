{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Při slunci a jeho jasu"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "při měsíci, když je následuje"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "při dni, když je odhaluje"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "při noci, když je zahaluje"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "při nebi a při tom, kdo je vystavěl"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "při zemi a při tom, kdo ji rozprostřel"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "při duši a při tom, kdo dal jí vyrovnanost"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "a vdechl jí hříšnost i bohabojnost"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Kdo ji očistí, ten jistě vydělá"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "a kdo ji zanedbá, ten jistě prodělá"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Ve vzpurnosti své obvinili Thamúdovci (proroka svého) ze lži"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "když bezbožník největší povstal mezi nimi"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "A pravil jim posel Boží: \"(Nedotýkejte se) velbloudice Boží a nechte ji napít"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Však za lháře jej prohlásili a (velbloudici) podřízli. Pán jejich je pak za jejich hříchy zahubil a se zemí je srovnal"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "aniž se následků toho obával"
        }
    ]
}