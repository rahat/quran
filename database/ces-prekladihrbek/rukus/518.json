{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Nač se vzájemně vyptávají"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Na zvěst nesmírnou"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "o níž se mezi sebou přou"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Však pozor, záhy poznají"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "a znovu: však pozor, záhy poznají"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Což zemi jsme jak lože nerozprostřeli"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "a hory jejími podpěrami neučinili"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "A v párech jsme vás stvořili"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "a spánek váš učinili přestávkou"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "a noc pokrývkou"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "a den pro získání obživy jsme vám stanovili"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "a nad vámi sedm pevných postavili"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "a lampu oslňující tam umístili"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "A z mračen déšť vytlačujících jsme vodu v hojnosti seslali vám"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "abychom z ní dali vyrůst obilí a rostlinám"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i hustě zarostlým zahradám"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Den rozhodnutí věru přijde v čase určeném"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "v ten den na pozoun bude zatroubeno a v zástupech dostavíte se"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "a nebe se otevře a branami stane se"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "a hory se do pohybu dají a budou přeludem"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "A peklo bude věru na číhané"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "útulek pro vzpurné"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "a v něm zůstanou věky celé"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "a chládku tam neokusí ani nápoje"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "kromě vody vroucí a hnijící"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "což odměnou bude odpovídající"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Vždyť oni v zúčtování nedoufali"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "a za výmysl Naše znamení lživě prohlašovali"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "však spočítali jsme věc každou a pořídili záznam"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Ochutnejte! Nic než trest dnes nepřidáme vám"
        }
    ]
}