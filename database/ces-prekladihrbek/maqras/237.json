{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Oslavuj jméno Pána svého nejvyššího"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "jenž vše stvořil a vyrovnal"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "každý osud předurčil a usměrnil"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "jenž pastviny k životu vyvolal"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "a potom je v pěnu zčernalou přeměnil"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Naučíme tě přednášet a nezapomeneš nic z věci té"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "leda co Bůh bude chtít - a On zná zjevné i skryté"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "a ulehčíme ti přístup k věci snadné"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Připomínej, vždyť připomenutí je užitečné"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "A kdo Boha se bojí, ten na ně si vzpomene"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "však odvrátí se od něho jen bídník nejhorší"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "jehož spalovat bude oheň největší"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "v něm potom nezemře ani nebude žít"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Prospívat naopak bude ten, kdo je očištěn"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "a jméno Pána svého vzpomíná a modlitbu koná"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Vy však přednost životu pozemskému dáváte"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "ač život budoucí lepší a trvalejší máte"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Toto vskutku je psáno ve svitcích dřívějších"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "svitcích Abrahamových a Mojžíšových"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Dostalo se ti zvěsti o hodině zahalující"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "V ten den budou tváře jedněch zahanbené"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "ustarané a ztrhané"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "a hořet budou v ohni planoucím"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "napájeny pramenem vroucím"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "jen bodláčí trnité tam za stravu budou mít"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "z něhož se netloustne a jímž hlad nelze utišit"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "A v ten den budou tváře jiných blažené"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "úsilím svým potěšené"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "v zahradě vyvýšené"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "kde neuslyší tlachání plané"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "v ní prameny jsou proudící"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "a pohovky zvýšené"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "a poháry rozestavené"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "a podušky v řadách vyrovnané"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "a drahé koberce rozprostřené"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Což neuvažují o tom, jak stvořeni byli velbloudi"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "jak nebesa byla zdvižena"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "jak pohoří byla vztyčena"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "jak země byla rozprostřena"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Připomínej, vždyť tys pouze ten, jenž připomíná"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "a nejsi nad nimi ten, jenž zaznamenává"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "leda toho, kdo odvrací se a nevěří"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "a toho Bůh trestem nejtěžším udeří"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "K Nám věru míří jejich návrat"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "a Nám pak budou účty své skládat"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Při úsvitu"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "a při nocích deseti"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "a při spárovaném a jedinečném"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "a při noci, když ubíhá"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Což není v tom pro člověka rozvážného přísaha"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Neviděls, co učinil Pán tvůj ´Ádovcům"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Iramu, jenž proslul sloupy svými"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "jimž nic podobného nebylo stvořeno v žádné zemi"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "a kmeni Thamúd, jenž skály v údolí prorážel"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "a Faraónovi, který na kůly narážel"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "a těm, kdož v zemích vzpurní byli"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "a pohoršení v nich pak šířili"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Však Pán tvůj proti nim důtky trestající rozpoutal"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "neb Pán tvůj neustále na číhané stál"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Co člověka se týče, když Pán jeho jej zkoušce podrobuje a štědrosti a dobrodiním jeho zahrnuje, pak on hovoří: \"Pán můj mi poctu prokazuje"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Když naopak jej zkouší tím, že příděl obživy mu odměřuje, pak on hovoří: \"Pán můj mě ponižuje"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Však pozor! Vždyť vy sirotky nectíte"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "ani k nakrmení nuzných se navzájem nevybízíte"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "však dědictví slabých nenasytně pohlcujete"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "a jen bohatství v lásce vášnivé máte"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Však pozor! Až země bude rozdrcena ranou za ranou"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "a přijde Pán tvůj i andělé, řada za řadou"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "a až v ten den bude peklo předvedeno, tehdy si člověk připomene - však co bude mu připomínání platno"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "I zvolá: \"Kéž bych měl na život budoucí něco předem připraveno"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "V ten den takovým trestem nebude nikdo potrestán"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "a nikdo takovými okovy spoután"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "A ty, duše usmířená"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "vrať se k Pánu svému v zalíbení a spokojená"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Vstup mezi služebníky mé"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "a vejdi do zahrady mé"
        }
    ]
}