{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Hle, přísahám při tomto městě"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "ty volně si žiješ v tomto městě"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "při otci a tom, co zplodil"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "že člověka jsme věru ke strastem stvořili"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Počítá snad, že nikdo proti němu nic nezmůže"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "když říká: \"Bohatství obrovské jsem strávil"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Domnívá se snad, že nikdo jej nespatřil"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Což dvě oči jsme mu nedali"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "a jazyk a dva rty"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "a na dvě stezky jsme jej neuvedli"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "A přece se nepustil po stezce vzhůru vedoucí"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Víš ty vůbec, co je to stezka vzhůru vedoucí"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Otroka propuštění"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "či v den hladu nakrmení"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "sirotka příbuzného"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "či chudáka nouzí trpícího"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "a také být z těch, kdož uvěřili a k neochvějnosti a soucitu se vzájemně nabádají"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "to budou lidé po pravici stojící"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "zatímco ti, co ve znamení naše nevěřili, to budou lidé po levici stojící"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "a nad nimi plát bude oheň uzavírající"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Při slunci a jeho jasu"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "při měsíci, když je následuje"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "při dni, když je odhaluje"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "při noci, když je zahaluje"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "při nebi a při tom, kdo je vystavěl"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "při zemi a při tom, kdo ji rozprostřel"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "při duši a při tom, kdo dal jí vyrovnanost"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "a vdechl jí hříšnost i bohabojnost"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Kdo ji očistí, ten jistě vydělá"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "a kdo ji zanedbá, ten jistě prodělá"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Ve vzpurnosti své obvinili Thamúdovci (proroka svého) ze lži"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "když bezbožník největší povstal mezi nimi"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "A pravil jim posel Boží: \"(Nedotýkejte se) velbloudice Boží a nechte ji napít"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Však za lháře jej prohlásili a (velbloudici) podřízli. Pán jejich je pak za jejich hříchy zahubil a se zemí je srovnal"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "aniž se následků toho obával"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Při noci, když temnem zahaluje"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "při dni, když v slávě se objevuje"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "při tom, jenž stvořil mužské i ženské pohlaví"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "rozdílné je věru vaše snažení"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Co týče se toho, jenž rozdával a Boha se bál"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "a za pravdivou nejkrásnější odměnu pokládal"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "tomu usnadníme přístup ke snadnému"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Však co se týče toho, kdo lakotil a za soběstačného se vydával"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "a nejkrásnější odměnu za lež pokládal"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "tomu ulehčíme přístup do nesnází"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "a co pomůže mu jmění jeho, až dořítí se do své zkázy"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Nám věru přísluší správné vedení"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Vždyť Nám patří život první i poslední"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Já varuji vás před ohněm jasně šlehajícím"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "v němž hořet bude jen ten nejbídnější"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "jenž za lež to pokládal a zády se obracel"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "Však vzdálen bude od něho bohabojný"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "jenž ze jmění svého dával, aby čistým se stal"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "a dobrodiní neprokazoval jen proto, aby byl odměněn"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "leč jen z touhy po tváři Pána svého nejvyššího to konal"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "A ten věru bude spokojen"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Při denním jasu"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "a při noci, když je tichá"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Pán tvůj tě neopustil ani tebou nepohrdá"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "A bude pro tebe poslední věru lepší než první"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "a Pán tvůj tě zajisté obdaří k tvému uspokojení"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Což nenašel tě jako sirotka - a v útulek tě nepřijal"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Bloudícím tě nalezl - a správnou cestu ti ukázal"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "nuzákem tě nalezl - a bohatství ti věru dal"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Co sirotka se týče, toho neutiskuj"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "co žebráka se týče, toho neodstrkuj"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "však o dobrodiní Pána svého jiným vypravuj"
        }
    ]
}