{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Cožpak neví, že až bude to, co je v hrobech, převráceno"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "a to, co v hrudích je, odhaleno"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Pán jejich v ten den dokonale o nich bude zpraven"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Roztříštění"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Co je to roztříštění"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Víš ty vůbec, co je to roztříštěni"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "V ten den budou lidé jak můry rozptýlené"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "a hory podobat se budou rozcupované vlně"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Tehdy ten, jehož skutků váha bude těžká"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "se octne v blaženém žití"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "zatímco ten, jehož skutků váha bude lehká"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Propast bude jeho mátí"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Víš ty vůbec, co je to Propast"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Oheň planoucí"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Vy rádi v rozmnožování jmění soupeříte"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "pokud hroby nenavštívíte"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Však pozor! Brzy poznáte"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "A znovu pozor! Brzy poznáte"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Však pozor! Kéž zřetelným poznáním poznáte"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "a věru oheň planoucí uzříte"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "a potom vskutku okem jistým jej spatříte"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "a posléze v ten den na blahobyt tázáni budete"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Při osudu"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Věru že člověk spěje v záhubu"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Kromě těch, kdož uvěřili a zbožné skutky konali a vzájemně se k pravdě a neochvějnosti nabádali"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Běda každému pomlouvači, jenž na cti utrhá"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "který bohatství hromadí a stále je počítá"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "a že jmění jeho jej učiní nesmrtelným, se domnívá"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Pozor však, vždyť věru bude uvržen do Drtící"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Víš ty vůbec, co je to Drtící"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Boží oheň zažehnutý"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "až k srdcím šlehající"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "a nad nimi se v klenbu pojící"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "a jak sloupy protažené stojící"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Neviděls, jak naložil Pán tvůj s lidmi slona"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Což neobrátil úklad jejich ve zmatky"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "a neposlal na ně v hejnech ptáky"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "kteří po nich vrhali oblázky z hlíny pálené"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "a učinil, že podobnými byli slámě ohryzané"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Pro soudržnost Kurajšovců"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "pro soudržnost jejich, když připravuji zimní a letní karavanu"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "nechť slouží chrámu tohoto Pánu"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "jenž nasytil je a ochránil před hladem"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Co soudíš o tom, jenž nazývá náboženství lží"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "To je ten, jenž sirotka odhání"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "a k nakrmení chudáka nepobízí"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Běda těm, kdož při modlení"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "modlitbu svou se nestarají"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "kteří chtějí být jen viděni"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "a dávat podporu odmítají"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Hojnosti, dali jsme ti věru plnou míru"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "modli se proto k svému Pánu a přinášej mu obětinu"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Vždyť ten, jenž nenávidí tě, bez mužských potomků je věru"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "Rci: \"Nevěřící"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Já nebudu uctívat to, co vy uctíváte"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "a vy nejste ctitelé toho, co já uctívám"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "a já nejsem ctitelem toho, co vy jste uctívali"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "a vy neuctíváte to, co já uctívám"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Vy máte své náboženství a já své náboženství mám"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Až vítězná pomoc Boží přijde, až spěch se dostaví"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "a uvidíš lidi vstupovat houfně v náboženství Boží"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "pak oslavuj chválou Pána svého a pros jej o odpuštění, vždyť On věru ke kajícníku je milostivý"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Zhyňte obě ruce Abú Lahaba, a zhynul již i on"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "A nebylo mu k ničemu jmění jeho ani to, co si vysloužil"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "však hořet bude v ohni plném plamenů on"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "i žena jeho, jež dříví palivové nosí"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "a jíž kol hrdla provaz z vláken palmových visí"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "Rci: \"On Bůh je jedinečný"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Bůh sám o sobě věčný"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Neplodil a nebyl zplozen"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "a není nikoho, kdo je mu roven"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "Rci: \"Utíkám se v ochranu Pána záře jitřní"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "před zlem Jeho stvoření"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "před zlem temnoty, když se šíří"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "před zlem žen, jež do uzlů prskají"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "před zlem závistníka, když závidí"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "Rci: \"Utíkám se v ochranu Pána lidí"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "vládce lidí"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Boha lidí"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "před zlem našeptavače pokradmého"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "jenž našeptává do hrudi lidí"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "ať již je z džinů či z lidí"
        }
    ]
}