{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Až se nebe rozštěpí"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "a uposlechne Pána svého a své povinnosti zadost učiní"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "až se země zarovná"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "a vyvrhne, co v ní je, a bude prázdná"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "a uposlechne Pána svého a své povinnosti zadost učiní"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Člověče, věru se usilovně snažíš o Pána svého a vskutku s Ním dojde k setkání"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Komu bude kniha jeho dána do pravice"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "tomu zúčtováno bude počtem snadným"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "a on radostně se navrátí k lidem svým"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "A ten, jemuž za záda bude kniha jeho dána"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "ten volat bude po zničení"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "a plát bude ve šlehajícím plameni"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Žil věru s rodinou svou v radosti na zemi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "a že k Bohu se nenavrátí, se domníval"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Ba nikoliv! Vždyť Pán jeho jej pozoroval"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Hle, přísahám při soumraku"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "při noci a při tom, co zahaluje"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "a při měsíci, když vchází do úplňku"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "že vskutku stoupat budete stupeň po stupínku"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Co je jim tedy, že nevěří"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "a k zemi se nevrhají, když Korán jim přednášejí"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Ba co víc, ti, kdož nevěří, za lživý jej prohlašují"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Však Bůh nejlépe ví, co skrývají"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Ohlas jim zvěst radostnou o trestu bolestném, jenž stihne je"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "kromě těch, kdož uvěřili a zbožné skutky konali, a těm náleží odměna, jež se neupomíná"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Při nebi souhvězdí plném"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "při dni slíbeném"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "při svědkovi a dosvědčeném"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Byli zabiti lidé příkopu"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "ohně stále živeného palivem"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Zatímco okolo seděli"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "jsouce svědky toho, co s věřícími dělali"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "a pouze za to se jim mstili, že v Boha mocného, chváleného uvěřili"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "jenž nad nebesy a zemí kraluje - a Bůh svědkem každé věci je"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Věru těm, kdož věřící muže a ženy pokoušeli a potom pokání nekonali, těm muka pekelná i trest spalující připravili"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "však pro ty, kdož uvěřili a zbožné skutky konali, pro ty jsou zahrady, pod nimiž řeky tekou, určeny - a to věru úspěch bude nesmírný"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Úder Pána tvého vskutku bude mohutný"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "On je ten, jenž vzniknout všemu dává a návrat působí"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "On odpouštějící je, láskyplný"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Pán trůnu slavený"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "uskutečňovatel toho, co jemu se zlíbí"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Doneslo se ti vyprávění o vojscích"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "o Faraónovi a Thamúdovcích"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Však přesto ti, kdož nevěří, za lež to prohlašují stále"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "zatímco Bůh za jejich zády je obkličuje"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Vždyť toto je Korán chvályhodný"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "na desce dobře střežené napsaný"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Při nebi a hvězdě nocí putující"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Víš ty vůbec, co je to hvězda nocí putující"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Hvězda pronikavě zářící"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "A věru duše každá nad sebou strážce má"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Z čeho byl stvořen, nechť člověk posoudí"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Stvořen byl z vystříknuté tekutiny"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "jež z místa mezi bedry a žebry proudí"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Bůh zajisté je schopen k životu jej navrátit"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "v den, kdy taje budou zkoumány"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "a kdy člověk nebude ani sílu, ani pomocníka mít"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Při nebi návratů plném"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "při zemi rozpuklin plné"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Věru že toto je slovo rozhodné"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "a není řečeno jen žertem"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Tito lidé věru strojí úklad"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "však já rovněž chystám lest"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Jen poshov nevěřícím a krátký jim popřej odklad"
        }
    ]
}