{
    "hizbs": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "۞ عَبَسَ وَتَوَلَّىٰۤ"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "أَن جَاۤءَهُ ٱلۡأَعۡمَىٰ"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "وَمَا یُدۡرِیكَ لَعَلَّهُۥ یَزَّكَّىٰۤ"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "أَوۡ یَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكۡرَىٰۤ"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "فَأَنتَ لَهُۥ تَصَدَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "وَمَا عَلَیۡكَ أَلَّا یَزَّكَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "وَأَمَّا مَن جَاۤءَكَ یَسۡعَىٰ"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "وَهُوَ یَخۡشَىٰ"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "فَأَنتَ عَنۡهُ تَلَهَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "كَلَّاۤ إِنَّهَا تَذۡكِرَةࣱ"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "فَمَن شَاۤءَ ذَكَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "فِی صُحُفࣲ مُّكَرَّمَةࣲ"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "مَّرۡفُوعَةࣲ مُّطَهَّرَةِۭ"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "بِأَیۡدِی سَفَرَةࣲ"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "كِرَامِۭ بَرَرَةࣲ"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "قُتِلَ ٱلۡإِنسَـٰنُ مَاۤ أَكۡفَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "مِنۡ أَیِّ شَیۡءٍ خَلَقَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "ثُمَّ ٱلسَّبِیلَ یَسَّرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "ثُمَّ إِذَا شَاۤءَ أَنشَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "كَلَّا لَمَّا یَقۡضِ مَاۤ أَمَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "فَلۡیَنظُرِ ٱلۡإِنسَـٰنُ إِلَىٰ طَعَامِهِۦۤ"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "أَنَّا صَبَبۡنَا ٱلۡمَاۤءَ صَبࣰّا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقࣰّا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "فَأَنۢبَتۡنَا فِیهَا حَبࣰّا"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "وَعِنَبࣰا وَقَضۡبࣰا"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "وَزَیۡتُونࣰا وَنَخۡلࣰا"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "وَحَدَاۤئِقَ غُلۡبࣰا"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "وَفَـٰكِهَةࣰ وَأَبࣰّا"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "مَّتَـٰعࣰا لَّكُمۡ وَلِأَنۡعَـٰمِكُمۡ"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "فَإِذَا جَاۤءَتِ ٱلصَّاۤخَّةُ"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "یَوۡمَ یَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِیهِ"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "وَأُمِّهِۦ وَأَبِیهِ"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "وَصَـٰحِبَتِهِۦ وَبَنِیهِ"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "لِكُلِّ ٱمۡرِئࣲ مِّنۡهُمۡ یَوۡمَئِذࣲ شَأۡنࣱ یُغۡنِیهِ"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "وُجُوهࣱ یَوۡمَئِذࣲ مُّسۡفِرَةࣱ"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ضَاحِكَةࣱ مُّسۡتَبۡشِرَةࣱ"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "وَوُجُوهࣱ یَوۡمَئِذٍ عَلَیۡهَا غَبَرَةࣱ"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تَرۡهَقُهَا قَتَرَةٌ"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "أُو۟لَـٰۤئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "إِذَا ٱلشَّمۡسُ كُوِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "وَإِذَا ٱلۡجِبَالُ سُیِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "وَإِذَا ٱلۡبِحَارُ سُجِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "بِأَیِّ ذَنۢبࣲ قُتِلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "وَإِذَا ٱلصُّحُفُ نُشِرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "وَإِذَا ٱلسَّمَاۤءُ كُشِطَتۡ"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "وَإِذَا ٱلۡجَحِیمُ سُعِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "عَلِمَتۡ نَفۡسࣱ مَّاۤ أَحۡضَرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "فَلَاۤ أُقۡسِمُ بِٱلۡخُنَّسِ"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ٱلۡجَوَارِ ٱلۡكُنَّسِ"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "وَٱلَّیۡلِ إِذَا عَسۡعَسَ"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "وَٱلصُّبۡحِ إِذَا تَنَفَّسَ"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "إِنَّهُۥ لَقَوۡلُ رَسُولࣲ كَرِیمࣲ"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "ذِی قُوَّةٍ عِندَ ذِی ٱلۡعَرۡشِ مَكِینࣲ"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "مُّطَاعࣲ ثَمَّ أَمِینࣲ"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "وَمَا صَاحِبُكُم بِمَجۡنُونࣲ"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "وَلَقَدۡ رَءَاهُ بِٱلۡأُفُقِ ٱلۡمُبِینِ"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "وَمَا هُوَ عَلَى ٱلۡغَیۡبِ بِضَنِینࣲ"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "وَمَا هُوَ بِقَوۡلِ شَیۡطَـٰنࣲ رَّجِیمࣲ"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "فَأَیۡنَ تَذۡهَبُونَ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "إِنۡ هُوَ إِلَّا ذِكۡرࣱ لِّلۡعَـٰلَمِینَ"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "لِمَن شَاۤءَ مِنكُمۡ أَن یَسۡتَقِیمَ"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "وَمَا تَشَاۤءُونَ إِلَّاۤ أَن یَشَاۤءَ ٱللَّهُ رَبُّ ٱلۡعَـٰلَمِینَ"
        }
    ]
}