{
    "hizbs": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "۞ إِذَا ٱلسَّمَاۤءُ ٱنشَقَّتۡ"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "وَأَذِنَتۡ لِرَبِّهَا وَحُقَّتۡ"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "وَإِذَا ٱلۡأَرۡضُ مُدَّتۡ"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "وَأَلۡقَتۡ مَا فِیهَا وَتَخَلَّتۡ"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "وَأَذِنَتۡ لِرَبِّهَا وَحُقَّتۡ"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "یَـٰۤأَیُّهَا ٱلۡإِنسَـٰنُ إِنَّكَ كَادِحٌ إِلَىٰ رَبِّكَ كَدۡحࣰا فَمُلَـٰقِیهِ"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "فَأَمَّا مَنۡ أُوتِیَ كِتَـٰبَهُۥ بِیَمِینِهِۦ"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "فَسَوۡفَ یُحَاسَبُ حِسَابࣰا یَسِیرࣰا"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "وَیَنقَلِبُ إِلَىٰۤ أَهۡلِهِۦ مَسۡرُورࣰا"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "وَأَمَّا مَنۡ أُوتِیَ كِتَـٰبَهُۥ وَرَاۤءَ ظَهۡرِهِۦ"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "فَسَوۡفَ یَدۡعُوا۟ ثُبُورࣰا"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "وَیَصۡلَىٰ سَعِیرًا"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "إِنَّهُۥ كَانَ فِیۤ أَهۡلِهِۦ مَسۡرُورًا"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "إِنَّهُۥ ظَنَّ أَن لَّن یَحُورَ"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "بَلَىٰۤۚ إِنَّ رَبَّهُۥ كَانَ بِهِۦ بَصِیرࣰا"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "فَلَاۤ أُقۡسِمُ بِٱلشَّفَقِ"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "وَٱلَّیۡلِ وَمَا وَسَقَ"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "وَٱلۡقَمَرِ إِذَا ٱتَّسَقَ"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "لَتَرۡكَبُنَّ طَبَقًا عَن طَبَقࣲ"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "فَمَا لَهُمۡ لَا یُؤۡمِنُونَ"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "وَإِذَا قُرِئَ عَلَیۡهِمُ ٱلۡقُرۡءَانُ لَا یَ̅سۡ̅جُ̅دُ̅و̅نَ̅ ۩"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "بَلِ ٱلَّذِینَ كَفَرُوا۟ یُكَذِّبُونَ"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "وَٱللَّهُ أَعۡلَمُ بِمَا یُوعُونَ"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "فَبَشِّرۡهُم بِعَذَابٍ أَلِیمٍ"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "إِلَّا ٱلَّذِینَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ لَهُمۡ أَجۡرٌ غَیۡرُ مَمۡنُونِۭ"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "وَٱلسَّمَاۤءِ ذَاتِ ٱلۡبُرُوجِ"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "وَٱلۡیَوۡمِ ٱلۡمَوۡعُودِ"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "وَشَاهِدࣲ وَمَشۡهُودࣲ"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "قُتِلَ أَصۡحَـٰبُ ٱلۡأُخۡدُودِ"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "ٱلنَّارِ ذَاتِ ٱلۡوَقُودِ"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "إِذۡ هُمۡ عَلَیۡهَا قُعُودࣱ"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "وَهُمۡ عَلَىٰ مَا یَفۡعَلُونَ بِٱلۡمُؤۡمِنِینَ شُهُودࣱ"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "وَمَا نَقَمُوا۟ مِنۡهُمۡ إِلَّاۤ أَن یُؤۡمِنُوا۟ بِٱللَّهِ ٱلۡعَزِیزِ ٱلۡحَمِیدِ"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "ٱلَّذِی لَهُۥ مُلۡكُ ٱلسَّمَـٰوَ ٰتِ وَٱلۡأَرۡضِۚ وَٱللَّهُ عَلَىٰ كُلِّ شَیۡءࣲ شَهِیدٌ"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "إِنَّ ٱلَّذِینَ فَتَنُوا۟ ٱلۡمُؤۡمِنِینَ وَٱلۡمُؤۡمِنَـٰتِ ثُمَّ لَمۡ یَتُوبُوا۟ فَلَهُمۡ عَذَابُ جَهَنَّمَ وَلَهُمۡ عَذَابُ ٱلۡحَرِیقِ"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "إِنَّ ٱلَّذِینَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ لَهُمۡ جَنَّـٰتࣱ تَجۡرِی مِن تَحۡتِهَا ٱلۡأَنۡهَـٰرُۚ ذَ ٰلِكَ ٱلۡفَوۡزُ ٱلۡكَبِیرُ"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "إِنَّ بَطۡشَ رَبِّكَ لَشَدِیدٌ"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "إِنَّهُۥ هُوَ یُبۡدِئُ وَیُعِیدُ"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "وَهُوَ ٱلۡغَفُورُ ٱلۡوَدُودُ"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "ذُو ٱلۡعَرۡشِ ٱلۡمَجِیدُ"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "فَعَّالࣱ لِّمَا یُرِیدُ"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "هَلۡ أَتَىٰكَ حَدِیثُ ٱلۡجُنُودِ"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "فِرۡعَوۡنَ وَثَمُودَ"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "بَلِ ٱلَّذِینَ كَفَرُوا۟ فِی تَكۡذِیبࣲ"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "وَٱللَّهُ مِن وَرَاۤئِهِم مُّحِیطُۢ"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "بَلۡ هُوَ قُرۡءَانࣱ مَّجِیدࣱ"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "فِی لَوۡحࣲ مَّحۡفُوظِۭ"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "وَٱلسَّمَاۤءِ وَٱلطَّارِقِ"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا ٱلطَّارِقُ"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ٱلنَّجۡمُ ٱلثَّاقِبُ"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "إِن كُلُّ نَفۡسࣲ لَّمَّا عَلَیۡهَا حَافِظࣱ"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "فَلۡیَنظُرِ ٱلۡإِنسَـٰنُ مِمَّ خُلِقَ"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "خُلِقَ مِن مَّاۤءࣲ دَافِقࣲ"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "یَخۡرُجُ مِنۢ بَیۡنِ ٱلصُّلۡبِ وَٱلتَّرَاۤئِبِ"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "إِنَّهُۥ عَلَىٰ رَجۡعِهِۦ لَقَادِرࣱ"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "یَوۡمَ تُبۡلَى ٱلسَّرَاۤئِرُ"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "فَمَا لَهُۥ مِن قُوَّةࣲ وَلَا نَاصِرࣲ"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "وَٱلسَّمَاۤءِ ذَاتِ ٱلرَّجۡعِ"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "وَٱلۡأَرۡضِ ذَاتِ ٱلصَّدۡعِ"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "إِنَّهُۥ لَقَوۡلࣱ فَصۡلࣱ"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "وَمَا هُوَ بِٱلۡهَزۡلِ"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "إِنَّهُمۡ یَكِیدُونَ كَیۡدࣰا"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "وَأَكِیدُ كَیۡدࣰا"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "فَمَهِّلِ ٱلۡكَـٰفِرِینَ أَمۡهِلۡهُمۡ رُوَیۡدَۢا"
        }
    ]
}