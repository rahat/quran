{
    "hizbs": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "۞ ٱلرَّحۡمَـٰنُ"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "عَلَّمَ ٱلۡقُرۡءَانَ"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "خَلَقَ ٱلۡإِنسَـٰنَ"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "عَلَّمَهُ ٱلۡبَیَانَ"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "ٱلشَّمۡسُ وَٱلۡقَمَرُ بِحُسۡبَانࣲ"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "وَٱلنَّجۡمُ وَٱلشَّجَرُ یَسۡجُدَانِ"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "وَٱلسَّمَاۤءَ رَفَعَهَا وَوَضَعَ ٱلۡمِیزَانَ"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "أَلَّا تَطۡغَوۡا۟ فِی ٱلۡمِیزَانِ"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "وَأَقِیمُوا۟ ٱلۡوَزۡنَ بِٱلۡقِسۡطِ وَلَا تُخۡسِرُوا۟ ٱلۡمِیزَانَ"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "وَٱلۡأَرۡضَ وَضَعَهَا لِلۡأَنَامِ"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "فِیهَا فَـٰكِهَةࣱ وَٱلنَّخۡلُ ذَاتُ ٱلۡأَكۡمَامِ"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "وَٱلۡحَبُّ ذُو ٱلۡعَصۡفِ وَٱلرَّیۡحَانُ"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "فَبِأَیِّ ءَالَاۤءِ رَبِّكُمَا تُكَذِّبَانِ"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "خَلَقَ ٱلۡإِنسَـٰنَ مِن صَلۡصَـٰلࣲ كَٱلۡفَخَّارِ"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "وَخَلَقَ ٱلۡجَاۤنَّ مِن مَّارِجࣲ مِّن نَّارࣲ"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "فَبِأَیِّ ءَالَاۤءِ رَبِّكُمَا تُكَذِّبَانِ"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "رَبُّ ٱلۡمَشۡرِقَیۡنِ وَرَبُّ ٱلۡمَغۡرِبَیۡنِ"
        },
        {
            "chapter": 55,
            "verse": 18,
