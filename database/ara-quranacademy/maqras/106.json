{
    "hizbs": [
        {
            "chapter": 15,
            "verse": 50,
            "text": "وَأَنَّ عَذَابِی هُوَ ٱلۡعَذَابُ ٱلۡأَلِیمُ"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "وَنَبِّئۡهُمۡ عَن ضَیۡفِ إِبۡرَ ٰهِیمَ"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "إِذۡ دَخَلُوا۟ عَلَیۡهِ فَقَالُوا۟ سَلَـٰمࣰا قَالَ إِنَّا مِنكُمۡ وَجِلُونَ"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "قَالُوا۟ لَا تَوۡجَلۡ إِنَّا نُبَشِّرُكَ بِغُلَـٰمٍ عَلِیمࣲ"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "قَالَ أَبَشَّرۡتُمُونِی عَلَىٰۤ أَن مَّسَّنِیَ ٱلۡكِبَرُ فَبِمَ تُبَشِّرُونَ"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "قَالُوا۟ بَشَّرۡنَـٰكَ بِٱلۡحَقِّ فَلَا تَكُن مِّنَ ٱلۡقَـٰنِطِینَ"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "قَالَ وَمَن یَقۡنَطُ مِن رَّحۡمَةِ رَبِّهِۦۤ إِلَّا ٱلضَّاۤلُّونَ"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "قَالَ فَمَا خَطۡبُكُمۡ أَیُّهَا ٱلۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "قَالُوۤا۟ إِنَّاۤ أُرۡسِلۡنَاۤ إِلَىٰ قَوۡمࣲ مُّجۡرِمِینَ"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "إِلَّاۤ ءَالَ لُوطٍ إِنَّا لَمُنَجُّوهُمۡ أَجۡمَعِینَ"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "إِلَّا ٱمۡرَأَتَهُۥ قَدَّرۡنَاۤ إِنَّهَا لَمِنَ ٱلۡغَـٰبِرِینَ"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَاۤءَ ءَالَ لُوطٍ ٱلۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمۡ قَوۡمࣱ مُّنكَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُوا۟ بَلۡ جِئۡنَـٰكَ بِمَا كَانُوا۟ فِیهِ یَمۡتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَیۡنَـٰكَ بِٱلۡحَقِّ وَإِنَّا لَصَـٰدِقُونَ"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَأَسۡرِ بِأَهۡلِكَ بِقِطۡعࣲ مِّنَ ٱلَّیۡلِ وَٱتَّبِعۡ أَدۡبَـٰرَهُمۡ وَلَا یَلۡتَفِتۡ مِنكُمۡ أَحَدࣱ وَٱمۡضُوا۟ حَیۡثُ تُؤۡمَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَیۡنَاۤ إِلَیۡهِ ذَ ٰلِكَ ٱلۡأَمۡرَ أَنَّ دَابِرَ هَـٰۤؤُلَاۤءِ مَقۡطُوعࣱ مُّصۡبِحِینَ"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَاۤءَ أَهۡلُ ٱلۡمَدِینَةِ یَسۡتَبۡشِرُونَ"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَـٰۤؤُلَاۤءِ ضَیۡفِی فَلَا تَفۡضَحُونِ"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَٱتَّقُوا۟ ٱللَّهَ وَلَا تُخۡزُونِ"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُوۤا۟ أَوَ لَمۡ نَنۡهَكَ عَنِ ٱلۡعَـٰلَمِینَ"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَـٰۤؤُلَاۤءِ بَنَاتِیۤ إِن كُنتُمۡ فَـٰعِلِینَ"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمۡرُكَ إِنَّهُمۡ لَفِی سَكۡرَتِهِمۡ یَعۡمَهُونَ"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتۡهُمُ ٱلصَّیۡحَةُ مُشۡرِقِینَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلۡنَا عَـٰلِیَهَا سَافِلَهَا وَأَمۡطَرۡنَا عَلَیۡهِمۡ حِجَارَةࣰ مِّن سِجِّیلٍ"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِی ذَ ٰلِكَ لَءَایَـٰتࣲ لِّلۡمُتَوَسِّمِینَ"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِیلࣲ مُّقِیمٍ"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِی ذَ ٰلِكَ لَءَایَةࣰ لِّلۡمُؤۡمِنِینَ"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وَإِن كَانَ أَصۡحَـٰبُ ٱلۡأَیۡكَةِ لَظَـٰلِمِینَ"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَٱنتَقَمۡنَا مِنۡهُمۡ وَإِنَّهُمَا لَبِإِمَامࣲ مُّبِینࣲ"
        },
        {
            "chapter": 15,
            "verse": 80,
            "text": "وَلَقَدۡ كَذَّبَ أَصۡحَـٰبُ ٱلۡحِجۡرِ ٱلۡمُرۡسَلِینَ"
        },
        {
            "chapter": 15,
            "verse": 81,
            "text": "وَءَاتَیۡنَـٰهُمۡ ءَایَـٰتِنَا فَكَانُوا۟ عَنۡهَا مُعۡرِضِینَ"
        },
        {
            "chapter": 15,
            "verse": 82,
            "text": "وَكَانُوا۟ یَنۡحِتُونَ مِنَ ٱلۡجِبَالِ بُیُوتًا ءَامِنِینَ"
        },
        {
            "chapter": 15,
            "verse": 83,
            "text": "فَأَخَذَتۡهُمُ ٱلصَّیۡحَةُ مُصۡبِحِینَ"
        },
        {
            "chapter": 15,
            "verse": 84,
            "text": "فَمَاۤ أَغۡنَىٰ عَنۡهُم مَّا كَانُوا۟ یَكۡسِبُونَ"
        },
        {
            "chapter": 15,
            "verse": 85,
            "text": "وَمَا خَلَقۡنَا ٱلسَّمَـٰوَ ٰتِ وَٱلۡأَرۡضَ وَمَا بَیۡنَهُمَاۤ إِلَّا بِٱلۡحَقِّۗ وَإِنَّ ٱلسَّاعَةَ لَءَاتِیَةࣱۖ فَٱصۡفَحِ ٱلصَّفۡحَ ٱلۡجَمِیلَ"
        },
        {
            "chapter": 15,
            "verse": 86,
            "text": "إِنَّ رَبَّكَ هُوَ ٱلۡخَلَّـٰقُ ٱلۡعَلِیمُ"
        },
        {
            "chapter": 15,
            "verse": 87,
            "text": "وَلَقَدۡ ءَاتَیۡنَـٰكَ سَبۡعࣰا مِّنَ ٱلۡمَثَانِی وَٱلۡقُرۡءَانَ ٱلۡعَظِیمَ"
        },
        {
            "chapter": 15,
            "verse": 88,
            "text": "لَا تَمُدَّنَّ عَیۡنَیۡكَ إِلَىٰ مَا مَتَّعۡنَا بِهِۦۤ أَزۡوَ ٰجࣰا مِّنۡهُمۡ وَلَا تَحۡزَنۡ عَلَیۡهِمۡ وَٱخۡفِضۡ جَنَاحَكَ لِلۡمُؤۡمِنِینَ"
        },
        {
            "chapter": 15,
            "verse": 89,
            "text": "وَقُلۡ إِنِّیۤ أَنَا ٱلنَّذِیرُ ٱلۡمُبِینُ"
        },
        {
            "chapter": 15,
            "verse": 90,
            "text": "كَمَاۤ أَنزَلۡنَا عَلَى ٱلۡمُقۡتَسِمِینَ"
        },
        {
            "chapter": 15,
            "verse": 91,
            "text": "ٱلَّذِینَ جَعَلُوا۟ ٱلۡقُرۡءَانَ عِضِینَ"
        },
        {
            "chapter": 15,
            "verse": 92,
            "text": "فَوَرَبِّكَ لَنَسۡءَلَنَّهُمۡ أَجۡمَعِینَ"
        },
        {
            "chapter": 15,
            "verse": 93,
            "text": "عَمَّا كَانُوا۟ یَعۡمَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 94,
            "text": "فَٱصۡدَعۡ بِمَا تُؤۡمَرُ وَأَعۡرِضۡ عَنِ ٱلۡمُشۡرِكِینَ"
        },
        {
            "chapter": 15,
            "verse": 95,
            "text": "إِنَّا كَفَیۡنَـٰكَ ٱلۡمُسۡتَهۡزِءِینَ"
        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "ٱلَّذِینَ یَجۡعَلُونَ مَعَ ٱللَّهِ إِلَـٰهًا ءَاخَرَۚ فَسَوۡفَ یَعۡلَمُونَ"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "وَلَقَدۡ نَعۡلَمُ أَنَّكَ یَضِیقُ صَدۡرُكَ بِمَا یَقُولُونَ"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "فَسَبِّحۡ بِحَمۡدِ رَبِّكَ وَكُن مِّنَ ٱلسَّـٰجِدِینَ"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "وَٱعۡبُدۡ رَبَّكَ حَتَّىٰ یَأۡتِیَكَ ٱلۡیَقِینُ"
        }
    ]
}