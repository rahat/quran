{
    "hizbs": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "۞ إِذَا ٱلسَّمَاۤءُ ٱنفَطَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "وَإِذَا ٱلۡكَوَاكِبُ ٱنتَثَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "وَإِذَا ٱلۡبِحَارُ فُجِّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "وَإِذَا ٱلۡقُبُورُ بُعۡثِرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "عَلِمَتۡ نَفۡسࣱ مَّا قَدَّمَتۡ وَأَخَّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "یَـٰۤأَیُّهَا ٱلۡإِنسَـٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلۡكَرِیمِ"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "ٱلَّذِی خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "فِیۤ أَیِّ صُورَةࣲ مَّا شَاۤءَ رَكَّبَكَ"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "كَلَّا بَلۡ تُكَذِّبُونَ بِٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "وَإِنَّ عَلَیۡكُمۡ لَحَـٰفِظِینَ"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كِرَامࣰا كَـٰتِبِینَ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "یَعۡلَمُونَ مَا تَفۡعَلُونَ"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِی نَعِیمࣲ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "وَإِنَّ ٱلۡفُجَّارَ لَفِی جَحِیمࣲ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "یَصۡلَوۡنَهَا یَوۡمَ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "وَمَا هُمۡ عَنۡهَا بِغَاۤئِبِینَ"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ثُمَّ مَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "یَوۡمَ لَا تَمۡلِكُ نَفۡسࣱ لِّنَفۡسࣲ شَیۡءࣰاۖ وَٱلۡأَمۡرُ یَوۡمَئِذࣲ لِّلَّهِ"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "وَیۡلࣱ لِّلۡمُطَفِّفِینَ"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "ٱلَّذِینَ إِذَا ٱكۡتَالُوا۟ عَلَى ٱلنَّاسِ یَسۡتَوۡفُونَ"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "وَإِذَا كَالُوهُمۡ أَو وَّزَنُوهُمۡ یُخۡسِرُونَ"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "أَلَا یَظُنُّ أُو۟لَـٰۤئِكَ أَنَّهُم مَّبۡعُوثُونَ"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "لِیَوۡمٍ عَظِیمࣲ"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "یَوۡمَ یَقُومُ ٱلنَّاسُ لِرَبِّ ٱلۡعَـٰلَمِینَ"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "كَلَّاۤ إِنَّ كِتَـٰبَ ٱلۡفُجَّارِ لَفِی سِجِّینࣲ"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا سِجِّینࣱ"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "كِتَـٰبࣱ مَّرۡقُومࣱ"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "وَیۡلࣱ یَوۡمَئِذࣲ لِّلۡمُكَذِّبِینَ"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "ٱلَّذِینَ یُكَذِّبُونَ بِیَوۡمِ ٱلدِّینِ"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "وَمَا یُكَذِّبُ بِهِۦۤ إِلَّا كُلُّ مُعۡتَدٍ أَثِیمٍ"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "إِذَا تُتۡلَىٰ عَلَیۡهِ ءَایَـٰتُنَا قَالَ أَسَـٰطِیرُ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "كَلَّاۖ بَلۡۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ یَكۡسِبُونَ"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "كَلَّاۤ إِنَّهُمۡ عَن رَّبِّهِمۡ یَوۡمَئِذࣲ لَّمَحۡجُوبُونَ"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "ثُمَّ إِنَّهُمۡ لَصَالُوا۟ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "ثُمَّ یُقَالُ هَـٰذَا ٱلَّذِی كُنتُم بِهِۦ تُكَذِّبُونَ"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "كَلَّاۤ إِنَّ كِتَـٰبَ ٱلۡأَبۡرَارِ لَفِی عِلِّیِّینَ"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "وَمَاۤ أَدۡرَىٰكَ مَا عِلِّیُّونَ"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "كِتَـٰبࣱ مَّرۡقُومࣱ"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "یَشۡهَدُهُ ٱلۡمُقَرَّبُونَ"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِی نَعِیمٍ"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "عَلَى ٱلۡأَرَاۤئِكِ یَنظُرُونَ"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "تَعۡرِفُ فِی وُجُوهِهِمۡ نَضۡرَةَ ٱلنَّعِیمِ"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "یُسۡقَوۡنَ مِن رَّحِیقࣲ مَّخۡتُومٍ"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "خِتَـٰمُهُۥ مِسۡكࣱۚ وَفِی ذَ ٰلِكَ فَلۡیَتَنَافَسِ ٱلۡمُتَنَـٰفِسُونَ"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "وَمِزَاجُهُۥ مِن تَسۡنِیمٍ"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "عَیۡنࣰا یَشۡرَبُ بِهَا ٱلۡمُقَرَّبُونَ"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "إِنَّ ٱلَّذِینَ أَجۡرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِینَ ءَامَنُوا۟ یَضۡحَكُونَ"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "وَإِذَا مَرُّوا۟ بِهِمۡ یَتَغَامَزُونَ"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "وَإِذَا ٱنقَلَبُوۤا۟ إِلَىٰۤ أَهۡلِهِمُ ٱنقَلَبُوا۟ فَكِهِینَ"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "وَإِذَا رَأَوۡهُمۡ قَالُوۤا۟ إِنَّ هَـٰۤؤُلَاۤءِ لَضَاۤلُّونَ"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "وَمَاۤ أُرۡسِلُوا۟ عَلَیۡهِمۡ حَـٰفِظِینَ"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "فَٱلۡیَوۡمَ ٱلَّذِینَ ءَامَنُوا۟ مِنَ ٱلۡكُفَّارِ یَضۡحَكُونَ"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "عَلَى ٱلۡأَرَاۤئِكِ یَنظُرُونَ"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "هَلۡ ثُوِّبَ ٱلۡكُفَّارُ مَا كَانُوا۟ یَفۡعَلُونَ"
        }
    ]
}