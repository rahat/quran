{
    "chapter": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "وَٱلنَّجۡمِ إِذَا هَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَاحِبُكُمۡ وَمَا غَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا یَنطِقُ عَنِ ٱلۡهَوَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "إِنۡ هُوَ إِلَّا وَحۡیࣱ یُوحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهُۥ شَدِیدُ ٱلۡقُوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُو مِرَّةࣲ فَٱسۡتَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهُوَ بِٱلۡأُفُقِ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوۡسَیۡنِ أَوۡ أَدۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَأَوۡحَىٰۤ إِلَىٰ عَبۡدِهِۦ مَاۤ أَوۡحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ ٱلۡفُؤَادُ مَا رَأَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "أَفَتُمَـٰرُونَهُۥ عَلَىٰ مَا یَرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدۡ رَءَاهُ نَزۡلَةً أُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِندَ سِدۡرَةِ ٱلۡمُنتَهَىٰ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِندَهَا جَنَّةُ ٱلۡمَأۡوَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "إِذۡ یَغۡشَى ٱلسِّدۡرَةَ مَا یَغۡشَىٰ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ ٱلۡبَصَرُ وَمَا طَغَىٰ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدۡ رَأَىٰ مِنۡ ءَایَـٰتِ رَبِّهِ ٱلۡكُبۡرَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "أَفَرَءَیۡتُمُ ٱللَّـٰتَ وَٱلۡعُزَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنَوٰةَ ٱلثَّالِثَةَ ٱلۡأُخۡرَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "أَلَكُمُ ٱلذَّكَرُ وَلَهُ ٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلۡكَ إِذࣰا قِسۡمَةࣱ ضِیزَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "إِنۡ هِیَ إِلَّاۤ أَسۡمَاۤءࣱ سَمَّیۡتُمُوهَاۤ أَنتُمۡ وَءَابَاۤؤُكُم مَّاۤ أَنزَلَ ٱللَّهُ بِهَا مِن سُلۡطَـٰنٍۚ إِن یَتَّبِعُونَ إِلَّا ٱلظَّنَّ وَمَا تَهۡوَى ٱلۡأَنفُسُۖ وَلَقَدۡ جَاۤءَهُم مِّن رَّبِّهِمُ ٱلۡهُدَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "أَمۡ لِلۡإِنسَـٰنِ مَا تَمَنَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلَّهِ ٱلۡءَاخِرَةُ وَٱلۡأُولَىٰ"
        },
        {
            "chapter": 53,
            "verse": 26,
            "text": "۞ وَكَم مِّن مَّلَكࣲ فِی ٱلسَّمَـٰوَ ٰتِ لَا تُغۡنِی شَفَـٰعَتُهُمۡ شَیۡءًا إِلَّا مِنۢ بَعۡدِ أَن یَأۡذَنَ ٱللَّهُ لِمَن یَشَاۤءُ وَیَرۡضَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 27,
            "text": "إِنَّ ٱلَّذِینَ لَا یُؤۡمِنُونَ بِٱلۡءَاخِرَةِ لَیُسَمُّونَ ٱلۡمَلَـٰۤئِكَةَ تَسۡمِیَةَ ٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 28,
            "text": "وَمَا لَهُم بِهِۦ مِنۡ عِلۡمٍۖ إِن یَتَّبِعُونَ إِلَّا ٱلظَّنَّۖ وَإِنَّ ٱلظَّنَّ لَا یُغۡنِی مِنَ ٱلۡحَقِّ شَیۡءࣰا"
        },
        {
            "chapter": 53,
            "verse": 29,
            "text": "فَأَعۡرِضۡ عَن مَّن تَوَلَّىٰ عَن ذِكۡرِنَا وَلَمۡ یُرِدۡ إِلَّا ٱلۡحَیَوٰةَ ٱلدُّنۡیَا"
        },
        {
            "chapter": 53,
            "verse": 30,
            "text": "ذَ ٰلِكَ مَبۡلَغُهُم مِّنَ ٱلۡعِلۡمِۚ إِنَّ رَبَّكَ هُوَ أَعۡلَمُ بِمَن ضَلَّ عَن سَبِیلِهِۦ وَهُوَ أَعۡلَمُ بِمَنِ ٱهۡتَدَىٰ"
        },
        {
            "chapter": 53,
            "verse": 31,
            "text": "وَلِلَّهِ مَا فِی ٱلسَّمَـٰوَ ٰتِ وَمَا فِی ٱلۡأَرۡضِ لِیَجۡزِیَ ٱلَّذِینَ أَسَـٰۤءُوا۟ بِمَا عَمِلُوا۟ وَیَجۡزِیَ ٱلَّذِینَ أَحۡسَنُوا۟ بِٱلۡحُسۡنَى"
        },
        {
            "chapter": 53,
            "verse": 32,
            "text": "ٱلَّذِینَ یَجۡتَنِبُونَ كَبَـٰۤئِرَ ٱلۡإِثۡمِ وَٱلۡفَوَ ٰحِشَ إِلَّا ٱللَّمَمَۚ إِنَّ رَبَّكَ وَ ٰسِعُ ٱلۡمَغۡفِرَةِۚ هُوَ أَعۡلَمُ بِكُمۡ إِذۡ أَنشَأَكُم مِّنَ ٱلۡأَرۡضِ وَإِذۡ أَنتُمۡ أَجِنَّةࣱ فِی بُطُونِ أُمَّهَـٰتِكُمۡۖ فَلَا تُزَكُّوۤا۟ أَنفُسَكُمۡۖ هُوَ أَعۡلَمُ بِمَنِ ٱتَّقَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 33,
            "text": "أَفَرَءَیۡتَ ٱلَّذِی تَوَلَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "وَأَعۡطَىٰ قَلِیلࣰا وَأَكۡدَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "أَعِندَهُۥ عِلۡمُ ٱلۡغَیۡبِ فَهُوَ یَرَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "أَمۡ لَمۡ یُنَبَّأۡ بِمَا فِی صُحُفِ مُوسَىٰ"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "وَإِبۡرَ ٰهِیمَ ٱلَّذِی وَفَّىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "أَلَّا تَزِرُ وَازِرَةࣱ وِزۡرَ أُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "وَأَن لَّیۡسَ لِلۡإِنسَـٰنِ إِلَّا مَا سَعَىٰ"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "وَأَنَّ سَعۡیَهُۥ سَوۡفَ یُرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "ثُمَّ یُجۡزَىٰهُ ٱلۡجَزَاۤءَ ٱلۡأَوۡفَىٰ"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "وَأَنَّ إِلَىٰ رَبِّكَ ٱلۡمُنتَهَىٰ"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "وَأَنَّهُۥ هُوَ أَضۡحَكَ وَأَبۡكَىٰ"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "وَأَنَّهُۥ هُوَ أَمَاتَ وَأَحۡیَا"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "وَأَنَّهُۥ خَلَقَ ٱلزَّوۡجَیۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "مِن نُّطۡفَةٍ إِذَا تُمۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "وَأَنَّ عَلَیۡهِ ٱلنَّشۡأَةَ ٱلۡأُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "وَأَنَّهُۥ هُوَ أَغۡنَىٰ وَأَقۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "وَأَنَّهُۥ هُوَ رَبُّ ٱلشِّعۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "وَأَنَّهُۥۤ أَهۡلَكَ عَادًا ٱلۡأُولَىٰ"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "وَثَمُودَا۟ فَمَاۤ أَبۡقَىٰ"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "وَقَوۡمَ نُوحࣲ مِّن قَبۡلُۖ إِنَّهُمۡ كَانُوا۟ هُمۡ أَظۡلَمَ وَأَطۡغَىٰ"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "وَٱلۡمُؤۡتَفِكَةَ أَهۡوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "فَغَشَّىٰهَا مَا غَشَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "فَبِأَیِّ ءَالَاۤءِ رَبِّكَ تَتَمَارَىٰ"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "هَـٰذَا نَذِیرࣱ مِّنَ ٱلنُّذُرِ ٱلۡأُولَىٰۤ"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "أَزِفَتِ ٱلۡءَازِفَةُ"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "لَیۡسَ لَهَا مِن دُونِ ٱللَّهِ كَاشِفَةٌ"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "أَفَمِنۡ هَـٰذَا ٱلۡحَدِیثِ تَعۡجَبُونَ"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "وَتَضۡحَكُونَ وَلَا تَبۡكُونَ"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "وَأَنتُمۡ سَـٰمِدُونَ"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "فَ̅ٱ̅سۡ̅جُ̅دُ̅و̅ا۟̅ لِلَّهِ وَٱعۡبُدُوا۟ ۩"
        }
    ]
}