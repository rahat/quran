        {
            "chapter": 99,
            "verse": 1,
            "text": "إِذَا زُلۡزِلَتِ ٱلۡأَرۡضُ زِلۡزَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "وَأَخۡرَجَتِ ٱلۡأَرۡضُ أَثۡقَالَهَا"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "وَقَالَ ٱلۡإِنسَـٰنُ مَا لَهَا"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "یَوۡمَئِذࣲ تُحَدِّثُ أَخۡبَارَهَا"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "بِأَنَّ رَبَّكَ أَوۡحَىٰ لَهَا"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "یَوۡمَئِذࣲ یَصۡدُرُ ٱلنَّاسُ أَشۡتَاتࣰا لِّیُرَوۡا۟ أَعۡمَـٰلَهُمۡ"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "فَمَن یَعۡمَلۡ مِثۡقَالَ ذَرَّةٍ خَیۡرࣰا یَرَهُۥ"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "وَمَن یَعۡمَلۡ مِثۡقَالَ ذَرَّةࣲ شَرࣰّا یَرَهُۥ"
        }
    ]
