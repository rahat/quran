{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "إِنَّ شَجَرَتَ ٱلزَّقُّومِ"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "طَعَامُ ٱلۡأَثِیمِ"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "كَٱلۡمُهۡلِ یَغۡلِی فِی ٱلۡبُطُونِ"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "كَغَلۡیِ ٱلۡحَمِیمِ"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "خُذُوهُ فَٱعۡتِلُوهُ إِلَىٰ سَوَاۤءِ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "ثُمَّ صُبُّوا۟ فَوۡقَ رَأۡسِهِۦ مِنۡ عَذَابِ ٱلۡحَمِیمِ"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "ذُقۡ إِنَّكَ أَنتَ ٱلۡعَزِیزُ ٱلۡكَرِیمُ"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "إِنَّ هَـٰذَا مَا كُنتُم بِهِۦ تَمۡتَرُونَ"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "إِنَّ ٱلۡمُتَّقِینَ فِی مَقَامٍ أَمِینࣲ"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "فِی جَنَّـٰتࣲ وَعُیُونࣲ"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "یَلۡبَسُونَ مِن سُندُسࣲ وَإِسۡتَبۡرَقࣲ مُّتَقَـٰبِلِینَ"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "كَذَ ٰلِكَ وَزَوَّجۡنَـٰهُم بِحُورٍ عِینࣲ"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "یَدۡعُونَ فِیهَا بِكُلِّ فَـٰكِهَةٍ ءَامِنِینَ"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "لَا یَذُوقُونَ فِیهَا ٱلۡمَوۡتَ إِلَّا ٱلۡمَوۡتَةَ ٱلۡأُولَىٰۖ وَوَقَىٰهُمۡ عَذَابَ ٱلۡجَحِیمِ"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "فَضۡلࣰا مِّن رَّبِّكَۚ ذَ ٰلِكَ هُوَ ٱلۡفَوۡزُ ٱلۡعَظِیمُ"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "فَإِنَّمَا یَسَّرۡنَـٰهُ بِلِسَانِكَ لَعَلَّهُمۡ یَتَذَكَّرُونَ"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "فَٱرۡتَقِبۡ إِنَّهُم مُّرۡتَقِبُونَ"
        }
    ]
}