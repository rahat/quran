{
    "rukus": [
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَاۤءَ ءَالَ لُوطٍ ٱلۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمۡ قَوۡمࣱ مُّنكَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُوا۟ بَلۡ جِئۡنَـٰكَ بِمَا كَانُوا۟ فِیهِ یَمۡتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَیۡنَـٰكَ بِٱلۡحَقِّ وَإِنَّا لَصَـٰدِقُونَ"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَأَسۡرِ بِأَهۡلِكَ بِقِطۡعࣲ مِّنَ ٱلَّیۡلِ وَٱتَّبِعۡ أَدۡبَـٰرَهُمۡ وَلَا یَلۡتَفِتۡ مِنكُمۡ أَحَدࣱ وَٱمۡضُوا۟ حَیۡثُ تُؤۡمَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَیۡنَاۤ إِلَیۡهِ ذَ ٰلِكَ ٱلۡأَمۡرَ أَنَّ دَابِرَ هَـٰۤؤُلَاۤءِ مَقۡطُوعࣱ مُّصۡبِحِینَ"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَاۤءَ أَهۡلُ ٱلۡمَدِینَةِ یَسۡتَبۡشِرُونَ"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَـٰۤؤُلَاۤءِ ضَیۡفِی فَلَا تَفۡضَحُونِ"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَٱتَّقُوا۟ ٱللَّهَ وَلَا تُخۡزُونِ"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُوۤا۟ أَوَ لَمۡ نَنۡهَكَ عَنِ ٱلۡعَـٰلَمِینَ"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَـٰۤؤُلَاۤءِ بَنَاتِیۤ إِن كُنتُمۡ فَـٰعِلِینَ"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمۡرُكَ إِنَّهُمۡ لَفِی سَكۡرَتِهِمۡ یَعۡمَهُونَ"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتۡهُمُ ٱلصَّیۡحَةُ مُشۡرِقِینَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلۡنَا عَـٰلِیَهَا سَافِلَهَا وَأَمۡطَرۡنَا عَلَیۡهِمۡ حِجَارَةࣰ مِّن سِجِّیلٍ"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِی ذَ ٰلِكَ لَءَایَـٰتࣲ لِّلۡمُتَوَسِّمِینَ"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِیلࣲ مُّقِیمٍ"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِی ذَ ٰلِكَ لَءَایَةࣰ لِّلۡمُؤۡمِنِینَ"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "وَإِن كَانَ أَصۡحَـٰبُ ٱلۡأَیۡكَةِ لَظَـٰلِمِینَ"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَٱنتَقَمۡنَا مِنۡهُمۡ وَإِنَّهُمَا لَبِإِمَامࣲ مُّبِینࣲ"
        }
    ]
}