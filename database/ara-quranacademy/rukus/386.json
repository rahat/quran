{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وَٱلصَّـٰۤفَّـٰتِ صَفࣰّا"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فَٱلزَّ ٰجِرَ ٰتِ زَجۡرࣰا"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فَٱلتَّـٰلِیَـٰتِ ذِكۡرًا"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إِنَّ إِلَـٰهَكُمۡ لَوَ ٰحِدࣱ"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رَّبُّ ٱلسَّمَـٰوَ ٰتِ وَٱلۡأَرۡضِ وَمَا بَیۡنَهُمَا وَرَبُّ ٱلۡمَشَـٰرِقِ"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إِنَّا زَیَّنَّا ٱلسَّمَاۤءَ ٱلدُّنۡیَا بِزِینَةٍ ٱلۡكَوَاكِبِ"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وَحِفۡظࣰا مِّن كُلِّ شَیۡطَـٰنࣲ مَّارِدࣲ"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لَّا یَسَّمَّعُونَ إِلَى ٱلۡمَلَإِ ٱلۡأَعۡلَىٰ وَیُقۡذَفُونَ مِن كُلِّ جَانِبࣲ"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دُحُورࣰاۖ وَلَهُمۡ عَذَابࣱ وَاصِبٌ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إِلَّا مَنۡ خَطِفَ ٱلۡخَطۡفَةَ فَأَتۡبَعَهُۥ شِهَابࣱ ثَاقِبࣱ"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فَٱسۡتَفۡتِهِمۡ أَهُمۡ أَشَدُّ خَلۡقًا أَم مَّنۡ خَلَقۡنَاۤۚ إِنَّا خَلَقۡنَـٰهُم مِّن طِینࣲ لَّازِبِۭ"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بَلۡ عَجِبۡتَ وَیَسۡخَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وَإِذَا ذُكِّرُوا۟ لَا یَذۡكُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وَإِذَا رَأَوۡا۟ ءَایَةࣰ یَسۡتَسۡخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وَقَالُوۤا۟ إِنۡ هَـٰذَاۤ إِلَّا سِحۡرࣱ مُّبِینٌ"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أَءِذَا مِتۡنَا وَكُنَّا تُرَابࣰا وَعِظَـٰمًا أَءِنَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أَوَ ءَابَاۤؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قُلۡ نَعَمۡ وَأَنتُمۡ دَ ٰخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فَإِنَّمَا هِیَ زَجۡرَةࣱ وَ ٰحِدَةࣱ فَإِذَا هُمۡ یَنظُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وَقَالُوا۟ یَـٰوَیۡلَنَا هَـٰذَا یَوۡمُ ٱلدِّینِ"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هَـٰذَا یَوۡمُ ٱلۡفَصۡلِ ٱلَّذِی كُنتُم بِهِۦ تُكَذِّبُونَ"
        }
    ]
}