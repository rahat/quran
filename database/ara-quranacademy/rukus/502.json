{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَأَلَ سَاۤئِلُۢ بِعَذَابࣲ وَاقِعࣲ"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكَـٰفِرِینَ لَیۡسَ لَهُۥ دَافِعࣱ"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ ٱللَّهِ ذِی ٱلۡمَعَارِجِ"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ ٱلۡمَلَـٰۤئِكَةُ وَٱلرُّوحُ إِلَیۡهِ فِی یَوۡمࣲ كَانَ مِقۡدَارُهُۥ خَمۡسِینَ أَلۡفَ سَنَةࣲ"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَٱصۡبِرۡ صَبۡرࣰا جَمِیلًا"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "إِنَّهُمۡ یَرَوۡنَهُۥ بَعِیدࣰا"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَنَرَىٰهُ قَرِیبࣰا"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "یَوۡمَ تَكُونُ ٱلسَّمَاۤءُ كَٱلۡمُهۡلِ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا یَسۡءَلُ حَمِیمٌ حَمِیمࣰا"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "یُبَصَّرُونَهُمۡۚ یَوَدُّ ٱلۡمُجۡرِمُ لَوۡ یَفۡتَدِی مِنۡ عَذَابِ یَوۡمِئِذِۭ بِبَنِیهِ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَـٰحِبَتِهِۦ وَأَخِیهِ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِیلَتِهِ ٱلَّتِی تُءۡوِیهِ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَن فِی ٱلۡأَرۡضِ جَمِیعࣰا ثُمَّ یُنجِیهِ"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّاۤۖ إِنَّهَا لَظَىٰ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةࣰ لِّلشَّوَىٰ"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُوا۟ مَنۡ أَدۡبَرَ وَتَوَلَّىٰ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَأَوۡعَىٰۤ"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "۞ إِنَّ ٱلۡإِنسَـٰنَ خُلِقَ هَلُوعًا"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعࣰا"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "وَإِذَا مَسَّهُ ٱلۡخَیۡرُ مَنُوعًا"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "إِلَّا ٱلۡمُصَلِّینَ"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "ٱلَّذِینَ هُمۡ عَلَىٰ صَلَاتِهِمۡ دَاۤئِمُونَ"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "وَٱلَّذِینَ فِیۤ أَمۡوَ ٰلِهِمۡ حَقࣱّ مَّعۡلُومࣱ"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "لِّلسَّاۤئِلِ وَٱلۡمَحۡرُومِ"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "وَٱلَّذِینَ یُصَدِّقُونَ بِیَوۡمِ ٱلدِّینِ"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "وَٱلَّذِینَ هُم مِّنۡ عَذَابِ رَبِّهِم مُّشۡفِقُونَ"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "إِنَّ عَذَابَ رَبِّهِمۡ غَیۡرُ مَأۡمُونࣲ"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "وَٱلَّذِینَ هُمۡ لِفُرُوجِهِمۡ حَـٰفِظُونَ"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "إِلَّا عَلَىٰۤ أَزۡوَ ٰجِهِمۡ أَوۡ مَا مَلَكَتۡ أَیۡمَـٰنُهُمۡ فَإِنَّهُمۡ غَیۡرُ مَلُومِینَ"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "فَمَنِ ٱبۡتَغَىٰ وَرَاۤءَ ذَ ٰلِكَ فَأُو۟لَـٰۤئِكَ هُمُ ٱلۡعَادُونَ"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "وَٱلَّذِینَ هُمۡ لِأَمَـٰنَـٰتِهِمۡ وَعَهۡدِهِمۡ رَ ٰعُونَ"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "وَٱلَّذِینَ هُم بِشَهَـٰدَ ٰتِهِمۡ قَاۤئِمُونَ"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "وَٱلَّذِینَ هُمۡ عَلَىٰ صَلَاتِهِمۡ یُحَافِظُونَ"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "أُو۟لَـٰۤئِكَ فِی جَنَّـٰتࣲ مُّكۡرَمُونَ"
        }
    ]
}