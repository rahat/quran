{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "یَطُوفُ عَلَیۡهِمۡ وِلۡدَ ٰنࣱ مُّخَلَّدُونَ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِأَكۡوَابࣲ وَأَبَارِیقَ وَكَأۡسࣲ مِّن مَّعِینࣲ"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا یُصَدَّعُونَ عَنۡهَا وَلَا یُنزِفُونَ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَـٰكِهَةࣲ مِّمَّا یَتَخَیَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَیۡرࣲ مِّمَّا یَشۡتَهُونَ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُورٌ عِینࣱ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَأَمۡثَـٰلِ ٱللُّؤۡلُؤِ ٱلۡمَكۡنُونِ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَاۤءَۢ بِمَا كَانُوا۟ یَعۡمَلُونَ"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا یَسۡمَعُونَ فِیهَا لَغۡوࣰا وَلَا تَأۡثِیمًا"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "إِلَّا قِیلࣰا سَلَـٰمࣰا سَلَـٰمࣰا"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَأَصۡحَـٰبُ ٱلۡیَمِینِ مَاۤ أَصۡحَـٰبُ ٱلۡیَمِینِ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِی سِدۡرࣲ مَّخۡضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَطَلۡحࣲ مَّنضُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَظِلࣲّ مَّمۡدُودࣲ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَمَاۤءࣲ مَّسۡكُوبࣲ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَفَـٰكِهَةࣲ كَثِیرَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوعَةࣲ وَلَا مَمۡنُوعَةࣲ"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَفُرُشࣲ مَّرۡفُوعَةٍ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "إِنَّاۤ أَنشَأۡنَـٰهُنَّ إِنشَاۤءࣰ"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنَـٰهُنَّ أَبۡكَارًا"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرُبًا أَتۡرَابࣰا"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّأَصۡحَـٰبِ ٱلۡیَمِینِ"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "ثُلَّةࣱ مِّنَ ٱلۡأَوَّلِینَ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "وَثُلَّةࣱ مِّنَ ٱلۡءَاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "وَأَصۡحَـٰبُ ٱلشِّمَالِ مَاۤ أَصۡحَـٰبُ ٱلشِّمَالِ"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "فِی سَمُومࣲ وَحَمِیمࣲ"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "وَظِلࣲّ مِّن یَحۡمُومࣲ"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "لَّا بَارِدࣲ وَلَا كَرِیمٍ"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "إِنَّهُمۡ كَانُوا۟ قَبۡلَ ذَ ٰلِكَ مُتۡرَفِینَ"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "وَكَانُوا۟ یُصِرُّونَ عَلَى ٱلۡحِنثِ ٱلۡعَظِیمِ"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "وَكَانُوا۟ یَقُولُونَ أَئِذَا مِتۡنَا وَكُنَّا تُرَابࣰا وَعِظَـٰمًا أَءِنَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "أَوَ ءَابَاۤؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "قُلۡ إِنَّ ٱلۡأَوَّلِینَ وَٱلۡءَاخِرِینَ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "لَمَجۡمُوعُونَ إِلَىٰ مِیقَـٰتِ یَوۡمࣲ مَّعۡلُومࣲ"
        }
    ]
