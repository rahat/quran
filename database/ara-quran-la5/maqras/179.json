{
    "hizbs": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "uh'shuru alladhina zalamu wa-azwajahum wama kanu yaʿbuduna"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "min duni l-lahi fa-ih'duhum ila sirati l-jahimi"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "waqifuhum innahum masuluna"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "ma lakum la tanasaruna"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "bal humu l-yawma mus'taslimuna"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "wa-aqbala baʿduhum ʿala baʿdin yatasaaluna"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "qalu innakum kuntum tatunana ʿani l-yamini"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "qalu bal lam takunu mu'minina"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "wama kana lana ʿalaykum min sul'tanin bal kuntum qawman taghina"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "fahaqqa ʿalayna qawlu rabbina inna ladhaiquna"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "fa-aghwaynakum inna kunna ghawina"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "fa-innahum yawma-idhin fi l-ʿadhabi mush'tarikuna"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "inna kadhalika nafʿalu bil-muj'rimina"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "innahum kanu idha qila lahum la ilaha illa l-lahu yastakbiruna"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "wayaquluna a-inna latariku alihatina lishaʿirin majnunin"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "bal jaa bil-haqi wasaddaqa l-mur'salina"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "innakum ladhaiqu l-ʿadhabi l-alimi"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "wama tuj'zawna illa ma kuntum taʿmaluna"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "illa ʿibada l-lahi l-mukh'lasina"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "ulaika lahum riz'qun maʿlumun"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "fawakihu wahum muk'ramuna"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "fi jannati l-naʿimi"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "ʿala sururin mutaqabilina"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "yutafu ʿalayhim bikasin min maʿinin"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "baydaa ladhatin lilsharibina"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "la fiha ghawlun wala hum ʿanha yunzafuna"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "waʿindahum qasiratu l-tarfi ʿinun"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "ka-annahunna baydun maknunun"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "fa-aqbala baʿduhum ʿala baʿdin yatasaaluna"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "qala qailun min'hum inni kana li qarinun"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "yaqulu a-innaka lamina l-musadiqina"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "a-idha mit'na wakunna turaban waʿizaman a-inna lamadinuna"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "qala hal antum muttaliʿuna"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "fa-ittalaʿa faraahu fi sawai l-jahimi"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "qala tal-lahi in kidtta latur'dini"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "walawla niʿ'matu rabbi lakuntu mina l-muh'darina"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "afama nahnu bimayyitina"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "illa mawtatana l-ula wama nahnu bimuʿadhabina"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "inna hadha lahuwa l-fawzu l-ʿazimu"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "limith'li hadha falyaʿmali l-ʿamiluna"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "adhalika khayrun nuzulan am shajaratu l-zaqumi"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "inna jaʿalnaha fit'natan lilzzalimina"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "innaha shajaratun takhruju fi asli l-jahimi"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "talʿuha ka-annahu ruusu l-shayatini"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "fa-innahum laakiluna min'ha famaliuna min'ha l-butuna"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "thumma inna lahum ʿalayha lashawban min hamimin"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "thumma inna marjiʿahum la-ila l-jahimi"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "innahum alfaw abaahum dallina"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "fahum ʿala atharihim yuh'raʿuna"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "walaqad dalla qablahum aktharu l-awalina"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "walaqad arsalna fihim mundhirina"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "fa-unzur kayfa kana ʿaqibatu l-mundharina"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "illa ʿibada l-lahi l-mukh'lasina"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "walaqad nadana nuhun falaniʿ'ma l-mujibuna"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "wanajjaynahu wa-ahlahu mina l-karbi l-ʿazimi"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "wajaʿalna dhurriyyatahu humu l-baqina"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "watarakna ʿalayhi fi l-akhirina"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "salamun ʿala nuhin fi l-ʿalamina"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "inna kadhalika najzi l-muh'sinina"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "innahu min ʿibadina l-mu'minina"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "thumma aghraqna l-akharina"
        }
    ]
}