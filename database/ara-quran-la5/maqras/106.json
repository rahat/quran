{
    "hizbs": [
        {
            "chapter": 15,
            "verse": 50,
            "text": "wa-anna ʿadhabi huwa l-ʿadhabu l-alimu"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "wanabbi'hum ʿan dayfi ib'rahima"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "idh dakhalu ʿalayhi faqalu salaman qala inna minkum wajiluna"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "qalu la tawjal inna nubashiruka bighulamin ʿalimin"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "qala abashartumuni ʿala an massaniya l-kibaru fabima tubashiruna"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "qalu basharnaka bil-haqi fala takun mina l-qanitina"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "qala waman yaqnatu min rahmati rabbihi illa l-daluna"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "qala fama khatbukum ayyuha l-mur'saluna"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "qalu inna ur'sil'na ila qawmin muj'rimina"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "illa ala lutin inna lamunajjuhum ajmaʿina"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "illa im'ra-atahu qaddarna innaha lamina l-ghabirina"
        },
        {
            "chapter": 15,
            "verse": 61,
            "text": "falamma jaa ala lutin l-mur'saluna"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "qala innakum qawmun munkaruna"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "qalu bal ji'naka bima kanu fihi yamtaruna"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "wa-ataynaka bil-haqi wa-inna lasadiquna"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "fa-asri bi-ahlika biqit'ʿin mina al-layli wa-ittabiʿ adbarahum wala yaltafit minkum ahadun wa-im'du haythu tu'maruna"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "waqadayna ilayhi dhalika l-amra anna dabira haulai maqtuʿun mus'bihina"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "wajaa ahlu l-madinati yastabshiruna"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "qala inna haulai dayfi fala tafdahuni"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "wa-ittaqu l-laha wala tukh'zuni"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "qalu awalam nanhaka ʿani l-ʿalamina"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "qala haulai banati in kuntum faʿilina"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "laʿamruka innahum lafi sakratihim yaʿmahuna"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "fa-akhadhathumu l-sayhatu mush'riqina"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "fajaʿalna ʿaliyaha safilaha wa-amtarna ʿalayhim hijaratan min sijjilin"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "inna fi dhalika laayatin lil'mutawassimina"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "wa-innaha labisabilin muqimin"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "inna fi dhalika laayatan lil'mu'minina"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "wa-in kana ashabu l-aykati lazalimina"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "fa-intaqamna min'hum wa-innahuma labi-imamin mubinin"
        },
        {
            "chapter": 15,
            "verse": 80,
            "text": "walaqad kadhaba ashabu l-hij'ri l-mur'salina"
        },
        {
            "chapter": 15,
            "verse": 81,
            "text": "waataynahum ayatina fakanu ʿanha muʿ'ridina"
        },
        {
            "chapter": 15,
            "verse": 82,
            "text": "wakanu yanhituna mina l-jibali buyutan aminina"
        },
        {
            "chapter": 15,
            "verse": 83,
            "text": "fa-akhadhathumu l-sayhatu mus'bihina"
        },
        {
            "chapter": 15,
            "verse": 84,
            "text": "fama aghna ʿanhum ma kanu yaksibuna"
        },
        {
            "chapter": 15,
            "verse": 85,
            "text": "wama khalaqna l-samawati wal-arda wama baynahuma illa bil-haqi wa-inna l-saʿata laatiyatun fa-is'fahi l-safha l-jamila"
        },
        {
            "chapter": 15,
            "verse": 86,
            "text": "inna rabbaka huwa l-khalaqu l-ʿalimu"
        },
        {
            "chapter": 15,
            "verse": 87,
            "text": "walaqad ataynaka sabʿan mina l-mathani wal-qur'ana l-ʿazima"
        },
        {
            "chapter": 15,
            "verse": 88,
            "text": "la tamuddanna ʿaynayka ila ma mattaʿna bihi azwajan min'hum wala tahzan ʿalayhim wa-ikh'fid janahaka lil'mu'minina"
        },
        {
            "chapter": 15,
            "verse": 89,
            "text": "waqul inni ana l-nadhiru l-mubinu"
        },
        {
            "chapter": 15,
            "verse": 90,
            "text": "kama anzalna ʿala l-muq'tasimina"
        },
        {
            "chapter": 15,
            "verse": 91,
            "text": "alladhina jaʿalu l-qur'ana ʿidina"
        },
        {
            "chapter": 15,
            "verse": 92,
            "text": "fawarabbika lanasalannahum ajmaʿina"
        },
        {
            "chapter": 15,
            "verse": 93,
            "text": "ʿamma kanu yaʿmaluna"
        },
        {
            "chapter": 15,
            "verse": 94,
            "text": "fa-is'daʿ bima tu'maru wa-aʿrid ʿani l-mush'rikina"
        },
        {
            "chapter": 15,
            "verse": 95,
            "text": "inna kafaynaka l-mus'tahziina"
        },
        {
            "chapter": 15,
            "verse": 96,
            "text": "alladhina yajʿaluna maʿa l-lahi ilahan akhara fasawfa yaʿlamuna"
        },
        {
            "chapter": 15,
            "verse": 97,
            "text": "walaqad naʿlamu annaka yadiqu sadruka bima yaquluna"
        },
        {
            "chapter": 15,
            "verse": 98,
            "text": "fasabbih bihamdi rabbika wakun mina l-sajidina"
        },
        {
            "chapter": 15,
            "verse": 99,
            "text": "wa-uʿ'bud rabbaka hatta yatiyaka l-yaqinu"
        }
    ]
}