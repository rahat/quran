{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "wal-turi"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "wakitabin masturin"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "fi raqqin manshurin"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "wal-bayti l-maʿmuri"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "wal-saqfi l-marfuʿi"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "wal-bahri l-masjuri"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "inna ʿadhaba rabbika lawaqiʿun"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "ma lahu min dafiʿin"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "yawma tamuru l-samau mawran"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "watasiru l-jibalu sayran"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "fawaylun yawma-idhin lil'mukadhibina"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "alladhina hum fi khawdin yalʿabuna"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "yawma yudaʿʿuna ila nari jahannama daʿʿan"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "hadhihi l-naru allati kuntum biha tukadhibuna"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "afasih'run hadha am antum la tub'siruna"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "is'lawha fa-is'biru aw la tasbiru sawaon ʿalaykum innama tuj'zawna ma kuntum taʿmaluna"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "inna l-mutaqina fi jannatin wanaʿimin"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "fakihina bima atahum rabbuhum wawaqahum rabbuhum ʿadhaba l-jahimi"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "kulu wa-ish'rabu hanian bima kuntum taʿmaluna"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "muttakiina ʿala sururin masfufatin wazawwajnahum bihurin ʿinin"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "wa-alladhina amanu wa-ittabaʿathum dhurriyyatuhum biimanin alhaqna bihim dhurriyyatahum wama alatnahum min ʿamalihim min shayin kullu im'ri-in bima kasaba rahinun"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "wa-amdadnahum bifakihatin walahmin mimma yashtahuna"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "yatanazaʿuna fiha kasan la laghwun fiha wala tathimun"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "wayatufu ʿalayhim ghil'manun lahum ka-annahum lu'lu-on maknunun"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "wa-aqbala baʿduhum ʿala baʿdin yatasaaluna"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "qalu inna kunna qablu fi ahlina mush'fiqina"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "famanna l-lahu ʿalayna wawaqana ʿadhaba l-samumi"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "inna kunna min qablu nadʿuhu innahu huwa l-baru l-rahimu"
        }
    ]
}