{
    "pages": [
        {
            "chapter": 38,
            "verse": 43,
            "text": "wawahabna lahu ahlahu wamith'lahum maʿahum rahmatan minna wadhik'ra li-uli l-albabi"
        },
        {
            "chapter": 38,
            "verse": 44,
            "text": "wakhudh biyadika digh'than fa-id'rib bihi wala tahnath inna wajadnahu sabiran niʿ'ma l-ʿabdu innahu awwabun"
        },
        {
            "chapter": 38,
            "verse": 45,
            "text": "wa-udh'kur ʿibadana ib'rahima wa-is'haqa wayaʿquba uli l-aydi wal-absari"
        },
        {
            "chapter": 38,
            "verse": 46,
            "text": "inna akhlasnahum bikhalisatin dhik'ra l-dari"
        },
        {
            "chapter": 38,
            "verse": 47,
            "text": "wa-innahum ʿindana lamina l-mus'tafayna l-akhyari"
        },
        {
            "chapter": 38,
            "verse": 48,
            "text": "wa-udh'kur is'maʿila wal-yasaʿa wadha l-kif'li wakullun mina l-akhyari"
        },
        {
            "chapter": 38,
            "verse": 49,
            "text": "hadha dhik'run wa-inna lil'muttaqina lahus'na maabin"
        },
        {
            "chapter": 38,
            "verse": 50,
            "text": "jannati ʿadnin mufattahatan lahumu l-abwabu"
        },
        {
            "chapter": 38,
            "verse": 51,
            "text": "muttakiina fiha yadʿuna fiha bifakihatin kathiratin washarabin"
        },
        {
            "chapter": 38,
            "verse": 52,
            "text": "waʿindahum qasiratu l-tarfi atrabun"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "hadha ma tuʿaduna liyawmi l-hisabi"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "inna hadha lariz'quna ma lahu min nafadin"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "hadha wa-inna lilttaghina lasharra maabin"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "jahannama yaslawnaha fabi'sa l-mihadu"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "hadha falyadhuquhu hamimun waghassaqun"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "waakharu min shaklihi azwajun"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "hadha fawjun muq'tahimun maʿakum la marhaban bihim innahum salu l-nari"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "qalu bal antum la marhaban bikum antum qaddamtumuhu lana fabi'sa l-qararu"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "qalu rabbana man qaddama lana hadha fazid'hu ʿadhaban diʿ'fan fi l-nari"
        }
    ]
}