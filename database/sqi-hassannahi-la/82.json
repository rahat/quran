{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kur qielli te cahet"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "dhe yjet te derdhen"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kur detet te perzihen"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "dhe varret te rrotullohen"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "atehere cdokush do te mesoje per veprat qe ka bere dhe qe ka lene pa bere"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O njeri, c’te mashtroi ty qe nuk i besove Zotit tend bujar"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "i Cili te krijoi ty, te dha permasa te rregullta dhe te harmonizoi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "dhe, qe te ka mbrujtur ne cfaredo forme qe ka dashur"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Por jo! Ju e quani te genjeshtert Gjykimin (pas ringjalljes)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "ndonese mbi ju ka rojtare (qe ju vezhgojne)"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "shenues te nderuar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "qe dine gjithcka qe beni"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Vertet, punedrejtet do te jene ne Xhenet"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kurse fajtoret, me siguri, do te jene ne Zjarrin flakerues"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "ne te cilin do te digjen ne Diten e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "pa mundur t’i shmangen atij"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "E kush do te ta shpjegoje ty se c’eshte Dita e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Edhe njehere: Kush do te ta shpjegoje ty se c’eshte Dita e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ajo eshte Dita, kur askush nuk do te kete fuqi per te bere gje per ndonje tjeter dhe, kur pushteti do te jete vetem i Allahut"
        }
    ]
}