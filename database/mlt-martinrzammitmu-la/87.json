{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Sebbaħ (Muħammad) Isem Sidek, l-Ogħla Wieħed"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "li'ħalaq u għamel sħiħ (il-ħolqien fiegħu)"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "uli fassal bil-qjies u wera t-triq"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "linnibbet il-mergħa"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "u (wara li għaddar) għamilha qasbija sewda"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sengegħluk taqra biex ma tinsiex"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "ħlief dak li jrid Alla. Huwa tabilħaqq jaf il-mikxuf u dakri jinħeba"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "U nħaffulek it-triq fejn (il-ligi t' Alla) il-ħafifa"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "(Melafakkar fu wissi, Muħammad), jekk tiswa t-tifkira"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Sejiflakar (it-twissija) min jibza' (minn Ala)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "u jwarrabha l-mizerabbli"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "li jinxtewa fin-Nar il-kbir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ulajmut fih u lanqas jgħix (ħajja tajba)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Tassew ħareg rebbieħ min issaffa"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ugsemmi Isem Sidu u jitlob"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Izdaintom tħobbu aktar il-ħajja (f'din) id-dinja"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "izda (il-Ħajja) l-Oħra aħjar u ddum aktar"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Tabilħaqq li dan (/i taqraw hawn) jinsab fil-Pagni tal-qedem"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "fil-Pagni ta' Abraham u ta' Mosc"
        }
    ]
}