{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "(Naħilfu) fuq ix-xemx u d-dawl jiddi tagħha"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "ufuq il-qamar meta jigi warajha"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "u fuq in-nhar meta jikxifha (/ix-emx)"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "ufuq il-lejl meta jgħattiha (bid-dalma tiegħu)"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "ufuq is-sema u Min bnieh"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "ufuq l-art u Min meddha"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "ufuq ir-ruħ u Min għamilha sħiħa"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "u nebbaħha l-ħazin u t-tajjeb għaliha"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Tabilħaqq joħrog rebbieħ min (Zir-ruħ) isaffiha"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "ujkun tellief min ibaxxiha (bid-dnub)"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "(Nies) Tamid giddbu (is-sewwa) fil-ħazen kbir tagħhom"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "meta l-agħar fosthom telaq (biex joqtol il-gemla ta' Alla)"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "U l-Mibgħut ta' Alla (Sa/iħ) qalilhom: ''(Ħarsu), il-gemla ta' Alla u ħudu ħsiebha u ħudu ħsieb) ix-xorb tagħhat"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Izda huma giddbuh u qatluha. Alla damdamhom u qeridhom ta' dnubhom, u Ikoll gabhom indaqs (fil-kasrig)"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Huwa ma jibzax minn dak li ggib magħha (qerda bħa' din)"
        }
    ]
}