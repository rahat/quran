{
    "chapter": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun siddetle cekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Ve neseli neseli yuruyenlere"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Ve yuze yuze gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Ve herkesi gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve isi tedbirle yapanlara"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun, bir sarsıntıdır, sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir sarsıntı daha gelir catar"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Yurekler, belinleyip korkar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozleri yere dikilir"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Onlar derler ki: Cukura atıldıktan sonra mı dirilecegiz de cıkacagız"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmıs bir kemik yıgını haline geldikten sonra mı olacak bu is"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Oyleyse derler, bu, pek ziyanlı bir donus"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Halbuki o, bir tek haykırıs"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Derken onlar dumduz bir yerde toplanırlar"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Gelmedi mi Musa'ya ait soz sana"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi, kutlu Tuva vadisinde nida etmisti ona"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Git Firavun'a, suphe yok ki o, azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: Ister misin temizlenmeyi"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Ve sana Rabbinin yolunu gostereyim de korkasın, saygı duyasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Derken ona en buyuk delili gostermisti"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Oysa yalanlamıstı, karsı gelmisti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra da geri donmustu de kosup gitmisti"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Derken halkı toplamıstı da bagırmıstı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben, sizin en yuce Rabbinizim demisti"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Derken Allah onu, dunyada da, ahirette de azaplandırarak helak etmisti"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Suphe yok ki bunda bir ibret var korkanlara"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha guc sizce, yoksa gogu yaratmak mı? Onu kurdu"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Tavanını yucelti, duzup kostu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Ve gecesini kararttı, kusluk cagını meydana cıkarttı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ve yeryuzunu de bundan sonra yaydı, dosedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Oradan suyunu, otlagını cıkarıp meydana getirdi"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Ve daglarını oturttu"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın faydası icin"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Derken o pek buyuk felaket gelip catınca"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "Insan, o gun anlar, hatırlar neye calıstıgını"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Ve cehennem, belirtilir gorene"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim azmıssa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Dunya yasayısını ustun tutmussa"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Artık cehennemdir onun yeriyurdu"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Ve ama kim, Rabbinin duragından korkup da nefsi, dileginden cekmisse"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Suphe yok ki cennettir onun yeriyurdu"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Senden sorarlar kıyameti, ne vakit kopacak"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen, onu ne bilirsin ki ne anlatacaksın"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun sonu, Rabbine aittir, o bilir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak, korkanı korkutansın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Onu gordukleri gun, bir aksamcık yasamısa donerler, yahut da gunun kusluk cagı"
        }
    ]
}