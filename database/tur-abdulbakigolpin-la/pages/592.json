{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır, siz dunya yasayısını ustun tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiretse daha hayırlıdır ve daha da surekli"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphe yok ki bu vardı, elbette daha onceki sahifelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Geldi mi sana her yanı ve herkesi kavrayıp kaplayan o felaketin haberi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun yuzler egilirler"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısıp cabalarlar, zahmete girip yorulurlar"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Pek kızgın atese atılırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Pek ıssı bir suyla suvarılırlar"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara orada yemek olarak ancak zehirli diken var"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne besler ve ne doyurur, aclıgı defeder"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun yuzler, sevinclidir, neseye dalar"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Calıstıklarından hosnut olurlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuce cennettedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz duymazlar"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar var"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yukseltilmis tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Ve konmus sagraklar"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Ve sırasıra konmus yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Yeryer yayılmıs dosemeler"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Hala mı bakmazlar deveye, nasıl da yaratılmıs"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Ve goge, nasıl da yuceltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Ve daglara, nasıl da dikilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Ve yeryuzune, nasıl da yayılmıs"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık korkut, ogut ver, sen, ancak bir korkutucusun, bir ogutcu"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlara musallat olmus biri degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kabul etmeyen ve kafir olana gelince"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Artık onu Allah azaplandırır pek buyuk bir azapla"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Suphe yok ki tapımızdır gelecekleri yer"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da suphe yok ki hesaplarını gormek, bize duser"
        }
    ]
}