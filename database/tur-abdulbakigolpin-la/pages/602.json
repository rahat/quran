{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Bunu da Kurays'ın uzlasması, hallerinin duzene girmesi icin yaptı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kıs, alısveris icin gocup konarak yolculuk ederlerken uzlasıp duzene girmeleri icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Artık kulluk edin bu evin Rabbine"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Oyle Rab ki doyurdu da kurtardı sizi aclıktan ve emin etti sizi korkudan"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Gordum mu yalanlayanı dini"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste budur o kimse ki horlar yetimi"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Ve doyurmaz da, onayak olmaz da doyurmaya yoksulu"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay hallerine o namaz kılanların"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Oylesine namaz kılanların ki namazlarını unuturlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Ve onlar, butun islerini gosteris icin yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Ve zekat vermeyi menederler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Suphe yok ki biziz sana kevseri veren"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Artık namaz kıl Rabbine ve kurban kes sen"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Suphesiz, sana bugzeden yok mu, odur nesli kesilen"
        }
    ]
}