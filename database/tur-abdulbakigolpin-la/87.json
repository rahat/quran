{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Tenzih et yucelerden yuce Rabbinin adını"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Bir Rab ki yarattı, derken duzup kostu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Bir Rab ki olcup bicti, derken dogru yolu buldurdu"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Bir Rab ki otlagı cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Derken onu kapkara, kupkuru bir hale dondurdu"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacagız da unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ancak Allah dilerse o baska; suphe yok ki o, acıga vurulanı da, gizli kalanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve sana, en kolay yolda basarı verecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Artık ogut ver, fayda verirse eger"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkan, ogut alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "En kotu ve bahtsız olan, ondan sakınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Oyle bahtsız ki o, pek buyuk atase atılır, yanar"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra da orada ne olur, ne dirilir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Gercekten de kurtulur, murada erer kendini temizleyen"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ve Rabbinin adını anıp da namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır, siz dunya yasayısını ustun tutarsınız"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiretse daha hayırlıdır ve daha da surekli"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Suphe yok ki bu vardı, elbette daha onceki sahifelerde"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nın sahifelerinde"
        }
    ]
}