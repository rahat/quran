{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi birbirlerine sorup dururlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Pek ulu haberi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Oylesine haber ki onlar, bu hususta aykırılıga dusmuslerdir"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır, bilirler yakında"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Gene de hayır, bilirler yakında"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryuzunu, hazır bir yaygı olarak yaymadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Ve dagları, civiler gibi caktık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi, ciftcift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Ve uykunuzu, vakitli bir istirahat zamanı kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Ve geceyi, her seyi orten bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Ve gunduzu de gecim zamanı"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ve ustunuzde, yedi saglam yapı kurduk"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Ve yalımyalım yanan bir kandil yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Ve sıkılan bulutlardan sarılsarıl sular akıttık"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Akıttık da o sayede tohumları, otları"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve birbirine sarmasdolas bahceleri, bagları meydana getirdik"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Suphe yok ki ayırma gununun vakti de tayin edilmistir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "O gun Sur ufurulur de gelirsiniz bolukboluk"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Ve gok acılmıs, kapılar haline gelmistir"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "ve daglar yurutulmus, seraba donmustur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Suphe yok ki cehennem pusudadır"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azanlara donup varılacak son yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Yıllar boyunca kalırlar orada"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Ne bir serinlik tadarlar, ne icilecek bir sey"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Ancak bir kaynar su, ancak bir kan ve irin"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Bir cezadır ki tam uygun"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Suphe yok ki onlar, hicbir soru ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve delillerimizi boyuna yalanlarlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Ve biz her seyi birbir sayıp yazdık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Artık tadın, ancak azabınızı arttırırız sizin"
        }
    ]
}