{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Ansızın kopacak kıyamet kopunca"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Kopacagına dair soylenen sozlerde yalan yok"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Halkı alcaltır, yuceltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yeryuzu siddetli bir sarsıntıyla sarsılınca"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Ve daglar, paramparca olunca"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagılmıs zerre zerre toz haline gelince"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Artık uc boluk olursunuz siz"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag taraf ehli, ama ne de sag taraf ehli"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Ve sol taraf ehli, ama ne de sol taraf ehli"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve bir de ileri gecenler ki herkesi gecmislerdir"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlardır mabutlarına yaklastırılanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Oncekilerin bircogu"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Sonra gelenlerdense azı onlardan"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altınlarla, mucevherlerle bezenmis tahtlarda otururlar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onlara yaslanırlar, birbirlerine karsı"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Ihtiyarlamıyan delikanlı hizmetciler dolasır etraflarında"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynagından doldurulmus saraplarla dolu taslarla ve ibriklerle ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "O saraptan basları da agrımaz ve sarhos da olmazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyvelerden"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Istedikleri kus etlerinden sunulur onlara"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve onlara kara gozlu huriler de var ki"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sanki haznelerde saklanmıs inciler"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada bos ve cirkin bir soz de duymazlar, gunaha ait bir soz de"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Ancak, esenlik size, esenlik denir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Ve sag taraf ehli, ama ne de sag taraf ehli"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz sedir agaclarıyla"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Ve meyveleri birbirine yaslanıp istiflenmis muz agaclarıyla dolu bir yerdedir onlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Ve uzayıp giden bir golgelik"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Ve caglayacaglaya akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Ve bircok meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Ne biter, zamanları gecer, ne yiyene yeme denir, yeter"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "ve yuksek dosekler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Suphe yok ki biz, onların eslerini de yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, kız oglan kız olarak halkettik"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Cilveli, sirin sozlu, eslerine asık ve onlarla yasıt kıldık"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sag taraf ehli icin"
        }
    ]
}