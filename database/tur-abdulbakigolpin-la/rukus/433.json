{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Suphe yok ki zakkum agacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Sucluların yemegidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Erimis bakıra, kursuna benzer, karınlarda kaynar"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Kaynar su gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Tutun onu da suruyun koca cehennemin ta ortasına"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra da dokun kaynar suyu azab olarak tepesine"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tat, suphe yok ki sen ustundun, kerem sahibiydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Gercekten de buydu suphe ettiginiz"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Suphe yok ki cekinenler, emin bir makamdadır"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Cennetlerde ve akarsuların kıyılarında"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Ince ve kalın ipekliler giyerler, karsıkarsıya otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Boyle iste ve onları evlendiririz iri gozlu hurilerle"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Orada emin bir halde her cesit meyvelar isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Ilk olumden baska olum tatmazlar orada ve onları korur koca cehennemin azabından"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinden bir lutuf ve ihsan olarak; budur o buyuk kurtulusun, murada erisin ta kendisi"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Gercekten de ogut alsınlar diye Kur'an'ı senin dilinle indirdik, okuyusunu da kolaylastırdık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Artık gozetle, bekle; suphe yok ki onlar da gozetlemedeler, beklemedeler"
        }
    ]
}