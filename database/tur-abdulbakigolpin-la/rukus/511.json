{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, gercekten de andolsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Ve andolsun cekilip giderken geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve ısıklanıp dogarken gune"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Cehennem, suphe yok ki pek buyuk mahluklardan biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Korkutucudur insanları"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden, ileri gecip itaat edenleri ve geri kalıp isyana dalanları"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Herkes, kazancına baglıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak sag taraf ehli baska"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Cennetlerdedir onlar, soralar, konusurlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Mucrimlerin halinden"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Nedir derler cehenneme sokan sizi"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Derler ki: Namaz kılmazdık"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Ve yoksulu doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Ve bos laflarla azgınlıga dalanlarla biz de dalardık"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Ve ceza gununu yalanlardık"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Bize olum gelip catıncaya dek"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Derken sefaatcilerin sefaati fayda vermez onlara"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Derken ne oluyor onlara ki ogutten, Kur'an'dan yuz cevirmedeler, kacmadalar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki yabani eseklerdir onlar da"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan kacıyorlar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır, onların herbiri, ister ki apacık sahifeler verilsin onlara"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, oyle degil, onlar, ahiretten korkmazlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Gercekten de Kur'an, bir oguttur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Artık dileyen, ogut alır onunla"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Ve Allah'ın dilediginden baskası ogut alamaz; odur cekinilmeye deger ve yarlıgayıp sucları orter"
        }
    ]
}