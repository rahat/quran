{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Oku Rabbinin adıyla ki butun mahlukatı yarattı"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Insanı da bir parca kan pıhtısından var etti"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku ve Rabbin, pek buyuk bir kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Oyle bir Rab ki kalemle ogretmistir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Insana bilmedigini belletmistir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Is oyle degil, suphe yok ki insan, azar elbette"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini ihtiyacı yok gorurse"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Suphe yok ki donus, Rabbinin tapısına"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gordun mu nehyedeni"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Bir kulu, namaz kılarsa"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Bir dusun, ya o dogru yolu bulup giderse"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Yahut da cekinmeyi emrederse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gordun mu sen de, ya oburu yalanlar ve yuz cevirirse"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki Allah, bilir gercekten de"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Is oyle degil, vaz gecmezse eger elbette tutarız perceminden"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalan soyleyenin, yanlıs hareket edenin perceminden"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Derken hemdemlerini, kavmini, kabilesini cagırır"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de yakında zebanileri cagırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Is oyle degil, itaat etme ona ve artık secde et de yaklas"
        }
    ]
}