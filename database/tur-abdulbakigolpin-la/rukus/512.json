{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Andolsun kıyamet gunune"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Ve andolsun kendini kınayıp duran nefse"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Sanıyor mu insan, kemiklerini hic mi toplayamayız"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, degil kemiklerini, parmak uclarını bile duzup kosmaya gucumuz yeter"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Hayır, insan, ilerde olanı yalanlamak ister"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Ve kıyamet gunu ne vakit diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Ve sasırıp gozler dikilince"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ve ay tutulunca"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Ve gunesle ay birlestirilince"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "Insan der ki o gun, nerede kacacak yer"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, yok kacacak, sıgınacak yer"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gun Rabbinin katındadır karar edilecek yer"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gun once yaptıgı da haber verilir insana, sonra yaptıgı da"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Hayır, insanın azası, aleyhine tanıklık eder"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Ozurlerini ortaya dokse de"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Vahyi, acele edip okumak icin dilini oynatıp durma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Suphe yok ki onu toplayıp unutturmamak da bize duser, okumak ve tertib etmek de"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Onu okuduk mu, uy okuyusuna"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Onu anlatıp bildirmek de suphesiz, bize duser"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, siz gecip gideni seversiniz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ve ahireti bırakırsınız"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "O gun yuzler parlar, guzellesir"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Ve Rablerine bakar"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Ve yuzler, asılır, kararır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Bellerini kıracak bir felaketi bekler"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Hayır; can, koprucuk kemiklerine gelince"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Ve bir okuyup ufleyen yok mu denince"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Ve suphe yok ki bu cagın, bir ayrılık cagı oldugunu anlayınca"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Ve baldır, baldıra dolasınca"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gun, Rabbinin tapısına goturulur"
        }
    ]
}