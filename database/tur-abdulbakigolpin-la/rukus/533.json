{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun gunese ve ısıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ve ondan ısık aldıgı, ardına dusup seyrettigi zaman aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Ve ısıdıgı zaman gune"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Ve kapladıgı zaman geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Ve goge ve onu kurana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Ve yere ve onu doseyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Ve cana ve azasını duzup kosana"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Derken ona kotulugunu de, cekinmesini de ilham etmistir"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Andolsun ki kim, ozunu iyice temizlemisse kurtulmustur, muradına ermistir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve andolsun ki kim, ozunu kirletmis, kotuluge gommusse ziyana girmistir"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlıgıyle yalanlamıstı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "O zaman ki en bahtsızları atılmıstı da"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Derken Allah'ın Peygamberi, bu demisti onlara, Allah'ın disi devesi, cekinin ondan ve suvarılmasından"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Derken yalanlamıslardı onu da ayaklarını kesip oldurmuslerdi deveyi, derken Rableri de sucları yuzunden onları helak etmisti de orasını duzleyivermisti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bu isin sonundan korkmazdı ki"
        }
    ]
}