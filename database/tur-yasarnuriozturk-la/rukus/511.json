{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır, sandıkları gibi degil! Yemin olsun Ay'a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Yemin olsun geceye, sırtını dondugunde"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Yemin olsun sabaha, agarıp ısıdıgında"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Ki o gercekten en buyuklerden biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "Insan icin bir uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden, one gecmek yahut arkaya kalmak/erken davranmak yahut gecikmek isteyen icin"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her benlik kendi kazandıgının bir karsılıgıdır"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ugur ve bereket yaranı mustesna"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Bahcelerdedirler. Birbirlerine soruyorlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suclular hakkında"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi sekara surukleyen nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Cevap verdiler: \"Namazı/duayı yerine getirenlerden degildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Yoksulu yedirip doyurmuyorduk"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Bos lakırdılara dalanlarla dalar giderdik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "Din gununu yalanlıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "Nihayet, tartısılmaz ve karsı cıkılmaz bilgi onumuze dikildi"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık yarar saglamaz onlara sefaatcilerin sefaati"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Ne oluyor onlara da ogut verip dusunduren seyden yuz ceviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Saga-sola kacısan yaban esekleri gibidirler"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Arslandan urkmuslerdir"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Iclerinden her kisi de istiyor ki, kendisine acılıp sacılmıs sayfalar verilsin"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Hayır, oyle sey olmaz! Dogrusu su ki, ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır, is, sandıkları gibi degil! O bir ogut verici/bir dusundurucudur"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Dileyen dusunur onu, ogut alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Ve onlar, Allah'ın diledigi dısında, ogut alamazlar. Sakındırmaya ve affetmeye ehil olan O'dur"
        }
    ]
}