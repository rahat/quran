{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "Is onların sandıgı gibi degil! Yıldızların dogup batma, kayıp dusme noktalarına yemin ediyorum"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Ve eger bilirseniz, gercekten buyuk bir yemindir bu"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "O, kesinlikle serefli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Titizlikle saklanan bir Kitap'tadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona, arındırılmıslardan baskası dokunmaz"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbi'nden indirilmistir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Simdi siz, bu sozu mu kirletip kucumseyeceksiniz/bu sozle mi alttan alıp gevsek davranacaksınız/bu sozle mi yagcılık edeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Rızkınızı, yalanlamanızdan ibaret mi kılıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Ya o canın bogaza gelip dayandıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "Iste o zaman siz bakakalırsınız"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona sizden daha yakınız, ama siz gormezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ceza gormeyecek kisilersiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eger dogru sozlulerseniz, onu geri cevirsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eger o, yaklastırılanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Rahatlık, guzel rızık ve nimetlerle dolu cennet var ona"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eger kutlu, ugurlu kisilerdense"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Selam sana kutlu ve ugurlu kisilerden!\" denir ona"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eger yalanlayan sapıklardansa"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "Kaynar sudan bir ziyafet"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme salıverilme var ona"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Iste budur, o tartısmasız, o kesin gercek"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Artık, o yuce Rabbinin adını tespih et"
        }
    ]
}