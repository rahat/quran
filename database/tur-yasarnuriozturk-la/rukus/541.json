{
    "rukus": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerkure, o sarsıntıyla sarsıldıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve toprak, agırlıklarını cıkardıgı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan: \"Ne oluyor buna?\" dedigi zaman"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "Iste o gun yerkure, tum haberlerini soyler/anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Cunku Rabbin ona vahyetmistir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gun insanlar, yapıp ettikleri kendilerine gosterilsin diye kumeler halinde ortaya fırlayacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık, kim bir zerre miktarı hayır uretmisse onu gorur"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Ve kim bir zerre miktarı ser uretmisse onu gorur"
        }
    ]
}