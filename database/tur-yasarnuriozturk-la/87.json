{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin o Al'a, o yuce adını tespih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki yarattı, duzene koydu"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O ki miktarını, seklini belirledi, yolunu cizip aydınlattı"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O ki otlagı cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu sellerin surukledigi morarmıs bir atık haline getirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni/sana okutacagız da artık unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allah'ın diledigi mustesna. O, acıklananı da gizleneni de bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Sana, en kolay olanı kolaylastıracagız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Eger hatırlatmak yarar saglarsa hatırlat/ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Icine urperti dusen, ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ici kararmıs bedbaht ise ondan kacınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "En buyuk atese girer o"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra orada ne olur ne de hayat bulur"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Benligini arındıran/zekat veren, kurtulusa gercekten ermistir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anmıs, namaz kılmıstır/dua etmistir o"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Dogrusu su ki, siz su igreti hayatı yegliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysaki sonraki hayat daha mutlu, daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Hic kuskusuz, bu Kur'an, ilk sayfalarda da elbette vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nın sayfalarında"
        }
    ]
}