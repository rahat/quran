{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "nis'sanśayaṁ, candranāṇ satyaṁ"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "rātriyāṇ satyaṁ- at pinniṭumpēāḷ"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "prabhātamāṇ satyaṁ- at praśēābhitamāvumpēāḷ"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "narakaṁ geravamuḷḷa kāryaṅṅaḷileānnutanne; tīrcca"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "manuṣyarkkeāru tākkītuṁ"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "niṅṅaḷil munnēāṭṭuvarānēā pinnēāṭṭu pēākānēā āgrahikkunna ēvarkkumuḷḷa tākkīt"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "ōrēā manuṣyanuṁ tān nēṭiyatin bādhyasthanāṇ"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "valatu kaiyil karm'mapustakaṁ kiṭṭunnavareāḻike"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "avar svargattēāppukaḷilāyirikkuṁ. avaranvēṣikkuṁ"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "kuṟṟavāḷikaḷēāṭ"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "niṅṅaḷe narakattiletticcat entāṇ?”"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "avar paṟayuṁ: \"ñaṅṅaḷ namaskarikkunnavarāyirunnilla"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "agatikaḷkk āhāraṁ keāṭukkunnavarumāyirunnilla"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "pāḻmeāḻikaḷil muḻukikkaḻiññavarēāṭeāppaṁ ñaṅṅaḷuṁ atil vyāpr̥tarāyirunnu"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "pratiphala nāḷine ñaṅṅaḷ niṣēdhiccirunnu"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "maraṇaṁ ñaṅṅaḷil vannettunvare.”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "annēraṁ śupārśakaruṭe śupārśa avarkkeāṭṭuṁ upakarikkukayilla"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "enniṭṭuṁ avarkkentupaṟṟi? avar ī udbēādhanattilninn tennimāṟukayāṇ"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "viṟaḷipiṭicca kaḻutakaḷeppēāleyāṇavar"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "sinhatte bhayann viraṇṭēāṭunna"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "alla; avarilēārēāruttaruṁ āgrahikkunnu: tanikk allāhuvilninn tuṟanna ēṭukaḷuḷḷa vēdapustakaṁ labhikkaṇamenn"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "orikkalumilla. avarkk paralēākatte pēṭiyilla ennatāṇ satyaṁ"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "aṟiyuka! uṟappāyuṁ it orudbēādhanamāṇ"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "atināl iṣṭamuḷḷavan itēārkkaṭṭe"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "allāhu ichikkunnuveṅkilallāte avarat svīkarikkukayilla. avanākunnu bhaktikkarhan. pāpamēācanattinuṭamayuṁ avan tanne"
        }
    ]
}