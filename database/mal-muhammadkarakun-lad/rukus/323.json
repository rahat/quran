{
    "rukus": [
        {
            "chapter": 26,
            "verse": 141,
            "text": "samūd samudāyaṁ daivadūtanmāre taḷḷippaṟaññu"
        },
        {
            "chapter": 26,
            "verse": 142,
            "text": "avaruṭe sahēādaran svālih avarēāṭ cēādicca sandarbhaṁ: \"niṅṅaḷ bhaktarāvunnillē"
        },
        {
            "chapter": 26,
            "verse": 143,
            "text": "tīrccayāyuṁ ñān niṅṅaḷilēkkayakkappeṭṭa viśvastanāya daivadūtanāṇ"
        },
        {
            "chapter": 26,
            "verse": 144,
            "text": "atināl niṅṅaḷ daivabhaktarāvuka. enne anusarikkuka"
        },
        {
            "chapter": 26,
            "verse": 145,
            "text": "itinṟe pēril ñān niṅṅaḷēāṭeāru pratiphalavuṁ cēādikkunnilla. enikkuḷḷa pratiphalaṁ prapañcanāthanil ninn mātramāṇ"
        },
        {
            "chapter": 26,
            "verse": 146,
            "text": "allā, iviṭe ikkāṇunnatileākke nirbhayamāyi yathēṣṭaṁ viharikkān niṅṅaḷe viṭṭēkkumennāṇēā niṅṅaḷ karutunnat"
        },
        {
            "chapter": 26,
            "verse": 147,
            "text": "atāyat ī tēāṭṭaṅṅaḷiluṁ aruvikaḷiluṁ"
        },
        {
            "chapter": 26,
            "verse": 148,
            "text": "vayalukaḷiluṁ pākamāya paḻakkulakaḷ niṟañña īntappanattēāppukaḷiluṁ"
        },
        {
            "chapter": 26,
            "verse": 149,
            "text": "niṅṅaḷ ārbhāṭapriyarāyi parvataṅṅaḷ turann vīṭukaḷuṇṭākkunnu"
        },
        {
            "chapter": 26,
            "verse": 150,
            "text": "niṅṅaḷ daivabhaktarāvuka. enne anusarikkuka"
        },
        {
            "chapter": 26,
            "verse": 151,
            "text": "atikramikaḷuṭe ājñakaḷ anusarikkarut"
        },
        {
            "chapter": 26,
            "verse": 152,
            "text": "bhūmiyil kuḻappamuṇṭākkunnavarāṇavar. oruvidha sanskaraṇavuṁ varuttāttavaruṁ.”"
        },
        {
            "chapter": 26,
            "verse": 153,
            "text": "avar paṟaññu: \"nī māraṇaṁ bādhiccavan tanne"
        },
        {
            "chapter": 26,
            "verse": 154,
            "text": "nī ñaṅṅaḷeppēāluḷḷa oru manuṣyanallātārumalla. atināl nī enteṅkiluṁ aṭayāḷaṁ keāṇṭuvarika. nī satyavādiyeṅkil!”"
        },
        {
            "chapter": 26,
            "verse": 155,
            "text": "addēhaṁ paṟaññu: \"itā oreāṭṭakaṁ. niścita divasaṁ atinu veḷḷaṁ kuṭikkān avasaramuṇṭ. niṅṅaḷkkuṁ oravasaramuṇṭ"
        },
        {
            "chapter": 26,
            "verse": 156,
            "text": "niṅṅaḷ atine oru nilakkuṁ drēāhikkarut. aṅṅane ceytāl oru bhayaṅkara nāḷile śikṣa niṅṅaḷe piṭikūṭuṁ.”"
        },
        {
            "chapter": 26,
            "verse": 157,
            "text": "ennāl avaratine kaśāpp ceytu. aṅṅane avar kaṭutta duḥkhattinirayāyi"
        },
        {
            "chapter": 26,
            "verse": 158,
            "text": "atēāṭe munnaṟiyipp nalkappeṭṭa śikṣa avare piṭikūṭi. tīrccayāyuṁ atileāru dr̥ṣṭāntamuṇṭ. enniṭṭuṁ avarilēṟe ppēruṁ viśvāsikaḷāyilla"
        },
        {
            "chapter": 26,
            "verse": 159,
            "text": "niścayaṁ ninṟe nāthan ēṟe pratāpiyuṁ paramakāruṇikanumāṇ"
        }
