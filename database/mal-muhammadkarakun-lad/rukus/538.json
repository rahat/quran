{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "vāyikkuka, sr̥ṣṭicca ninṟe nāthanṟe nāmattil"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "oṭṭippiṭikkunnatilninn avan manuṣyane sr̥ṣṭiccu"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "vāyikkuka! ninṟe nāthan atyudāranāṇ"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "pēnakeāṇṭu paṭhippiccavan"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "manuṣyane avanaṟiyāttat avan paṭhippiccu"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "sanśayamilla; manuṣyan atikramiyāyirikkunnu"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "tanikkutānpēānnavanāyi kaṇṭatināl"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "niścayaṁ, maṭakkaṁ ninṟe nāthaṅkalēkkāṇ"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "taṭayunnavane nī kaṇṭēā"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "nam'muṭe dāsane, avan namaskarikkumpēāḷ"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "nī kaṇṭēā? ā aṭima nērvaḻiyil tanneyāṇ"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "athavā, bhakti upadēśikkunnavanāṇ"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "nī kaṇṭēā? ī taṭayunnavan satyatte taḷḷikkaḷayukayuṁ puṟantiriññu nilkkukayuṁ ceytavanāṇ"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "allāhu ellāṁ kāṇunnuvenn avan aṟiyunnillē"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "sanśayaṁ vēṇṭa; avanit avasānippikkunnilleṅkil; avanṟe kuṭuma nāṁ piṭiccu valikkuka tanne ceyyuṁ"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "kaḷḷaṁ paṟayukayuṁ; pāpaṁ pravarttikkukayuṁ ceyyunna kuṭuma"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "appēāḻavan tanṟe āḷukaḷe viḷikkaṭṭe"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "nāṁ nam'muṭe śikṣākāryaṅṅaḷuṭe cumatalakkāreyuṁ viḷikkāṁ"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "arut! nī avan vaḻaṅṅarut. nī sāṣṭāṅgaṁ praṇamikkuka! nam'muṭe sāmīpyaṁ nēṭuka"
        }
    ]
}