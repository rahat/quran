{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "sūryanuṁ atinṟe śēābhayuṁ sākṣi"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "candran sākṣi, at sūryane pintuṭarumpēāḷ"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "pakal sākṣi, at sūryane teḷiyiccukāṇikkumpēāḷ"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "rāvu sākṣi, at sūryane mūṭumpēāḷ"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "ākāśavuṁ atine nirmiccu nirttiyatuṁ sākṣi"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "bhūmiyuṁ atine parattiyatuṁ sākṣi"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "ātmāvuṁ atine kramappeṭuttiyatuṁ sākṣi"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "aṅṅane atin dharmatteyuṁ adharmatteyuṁ sambandhicca bēādhaṁ nalkiyatuṁ"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "tīrccayāyuṁ atmāvine sanskariccavan vijayiccu"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "atine malinamākkiyavan parājayappeṭṭu"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "thamūd gēātraṁ dhikkāraṁ kāraṇaṁ satyatte taḷḷikkaḷaññu"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "avarile parama duṣṭan iṟaṅṅittiriccappēāḷ"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "daivadūtan avarēāṭ paṟaññu: “it allāhuvinṟe oṭṭakaṁ. atinṟe jalapānaṁ 1 taṭayātirikkuka.”"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "avaraddēhatte dhikkariccu. oṭṭakatte aṟuttu. avaruṭe pāpaṁ kāraṇaṁ avaruṭe nāthan avare onnaṭaṅkaṁ naśippiccu. śikṣa avarkkellāṁ orupēāle nalkukayuṁ ceytu"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "ī naṭapaṭiyuṭe pariṇati avaneāṭṭuṁ bhayappeṭunnilla"
        }
    ]
}