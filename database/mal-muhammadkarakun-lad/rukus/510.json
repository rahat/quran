{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "putaccu mūṭiyavanē"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "eḻunnēlkkuka. janattin munnaṟiyipp nalkuka"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "ninṟe nāthanṟe mahatvaṁ vāḻttuka"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "ninṟe vastraṅṅaḷ vr̥ttiyākkuka"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "aḻukkukaḷilninn akannu nilkkuka"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "kūṭutal tiriccukiṭṭān keāticc nī audāryaṁ kāṇikkarut"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "ninṟe nāthannuvēṇṭi kṣama pālikkuka"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "pinne kāhaḷaṁ ūtappeṭṭāl"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "ann ēṟe prayāsamēṟiya dinamāyirikkuṁ"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "satyaniṣēdhikaḷkk oṭṭuṁ sukhakaramallātta divasaṁ"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "ñān taniye sr̥ṣṭicca ā manuṣyane enikkiṅṅu viṭṭutarika"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "nāmavan dhārāḷaṁ dhanaṁ nalki"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "entinuṁ pēānna makkaḷeyuṁ"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "avanāvaśyamāya sekaryaṅṅaḷellāṁ ñāneārukkikkeāṭuttu"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "enniṭṭuṁ ñān iniyuṁ kūṭutal keāṭukkaṇamenn avan keātikkunnu"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "illa; avan nam'muṭe vacanaṅṅaḷuṭe kaṭutta śatruvāyirikkunnu"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "vaikāte tanne nāmavane kḷēśamēṟiya oru kayaṟṟaṁ kayaṟāniṭavaruttuṁ"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "avan cinticcu. cilat ceyyānuṟaccu"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "atinālavan śāpaṁ. eṅṅane ceyyānāṇavanuṟaccat"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "vīṇṭuṁ avanu nāśaṁ! eṅṅane pravarttikkānāṇavan tīrumāniccat"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "pinne avaneānnu nēākki"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "enniṭṭ mukhaṁ kēāṭṭi. neṟṟi cuḷiccu"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "pinne pintiriyukayuṁ ahaṅkarikkukayuṁ ceytu"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "enniṭṭ avan pulampi: ī khur'ān paramparāgatamāya māyājālamallāteānnumalla"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "it veṟuṁ manuṣyavacanaṁ mātraṁ"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "aṭuttutanne nāmavane narakattīyileriyikkuṁ"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "narakattī entāṇenn ninakkentaṟiyāṁ"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "at onnuṁ bākkivekkukayilla. onnineyuṁ oḻivākkukayumilla"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "at teāli kariccukaḷayuṁ"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "atinṟe cumatalakkārāyi patteāmpat pēruṇṭ"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "nāṁ narakattin ivvidhaṁ cumatalakkārāyi niścayiccat malakkukaḷe mātramāṇ. avaruṭe eṇṇaṁ satyaniṣēdhikaḷkkuḷḷa nam'muṭe oru parīkṣaṇaṁ mātramāṇ; vēdāvakāśikaḷkk dr̥ḍhabēādhyaṁ varānuṁ satyaviśvāsikaḷkk viśvāsaṁ vardhikkānumāṇit. vēdakkāruṁ satyaviśvāsikaḷuṁ sanśayattilakappeṭātirikkānuṁ. atēāṭeāppaṁ satyaniṣēdhikaḷuṁ rēāgabādhitamāya manas'sinuṭamakaḷuṁ, allāhu itukeāṇṭ enteārupamayāṇ uddēśiccat ennu paṟayānumāṇ. ivvidhaṁ allāhu tānichikkunnavare vaḻikēṭilākkunnu. tānuddēśikkunnavare nērvaḻiyilākkukayuṁ ceyyunnu. ninṟe nāthanṟe sain'yaṅṅaḷe sambandhicc avanallāte ārumaṟiyilla. it manuṣyarkk orudbēādhanamallāteānnumalla"
        }
    ]
}