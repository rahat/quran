{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatanāya ninṟe nāthanṟe nāmaṁ kīrttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "avanēā sr̥ṣṭicc santulitamākkiyavan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "kramīkaricc nērvaḻi kāṇiccavan"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "mēccilppuṟaṅṅaḷ orukkiyavan"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "enniṭṭavanatine uṇaṅṅikkariñña cavaṟākki"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ninakku nāṁ ōtittaruṁ. nīyat maṟakkukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāhu ichiccateāḻike. parasyavuṁ rahasyavuṁ avanaṟiyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "eḷuppamāya vaḻi ninakku nāṁ orukkittarāṁ"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "atināl nī udbēādhippikkuka- udbēādhanaṁ upakarikkumeṅkil"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "daivabhayamuḷḷavan udbēādhanaṁ uḷkkeāḷḷuṁ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "keāṭiya nirbhāgyavān atil ninn akalukayuṁ ceyyuṁ"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "avanēā, kaṭhinamāya narakattīyil kiṭanneriyunnavan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnīṭ avanatil marikkukayilla; jīvikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tīrccayāyuṁ viśud'dhi variccavan vijayiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "avan tanṟe nāthanṟe nāmamēārttu. aṅṅane avan namaskariccu"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "ennāl niṅṅaḷ ī lēāka jīvitattināṇ prāmukhyaṁ nalkunnat"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "paralēākamāṇ ēṟṟaṁ uttamavuṁ ēṟe śāśvatavuṁ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "sanśayaṁ vēṇṭā, it pūrva vēdaṅṅaḷilumuṇṭ"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "athavā, ibṟāhīminṟeyuṁ mūsāyuṭeyuṁ granthattāḷukaḷil"
        }
    ]
}