{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "peāṭi paṟattunnava sākṣi"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "kanatta mēghaṅṅaḷe vahikkunnava sākṣi"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "tenni nīṅṅunnava sākṣi"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "kāryaṅṅaḷ vīticcu keāṭukkunnava sākṣi"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "niṅṅaḷkku vāgdattaṁ ceyyappeṭunna kāryaṁ satyaṁ tanne; tīrcca"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "n'yāyavidhi naṭakkuka tanne ceyyuṁ"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "vividha sañcārapathaṅṅaḷuḷḷa ākāśaṁ sākṣi"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "tīrccayāyuṁ niṅṅaḷ vyatyastā bhiprāyakkārāṇ"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "nērvaḻiyil ninn akannavan ī satyattil ninn vyaticalikkunnu"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "ūhaṅṅaḷe avalambikkunnavar naśiccatutanne"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "avarēā vivarakkēṭil matimaṟannavar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "avar cēādikkunnu, n'yāyavidhiyuṭe dinaṁ eppēāḻenn"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "atēā, avar narakāgniyil eriyunna dinaṁ tanne"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "ann avarēāṭ paṟayuṁ: itā, niṅṅaḷkkuḷḷa śikṣa. it anubhaviccukeāḷḷuka. niṅṅaḷ tiṭukkaṁ kāṭṭi āvaśyappeṭṭukeāṇṭirunnat itāṇallēā"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "ennāl sūkṣmata pālikkunnavar svargīyārāmaṅṅaḷiluṁ aruvikaḷilumāyirikkuṁ"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "taṅṅaḷuṭe nāthanṟe varadānaṅṅaḷ anubhavikkunnavarāyi. avar nēratte sadvr̥ttarāyirunnuvallēā"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "rātriyil alpanēramē avar uṟaṅṅāṟuṇṭāyirunnuḷḷū"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "avar rāvinṟe oṭuvuvēḷakaḷil pāpamēācanaṁ tēṭunnavarumāyirunnu"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "avaruṭe sampādyaṅṅaḷil cēādikkunnavannuṁ nirālambanuṁ avakāśamuṇṭāyirunnu"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "dr̥ḍhaviśvāsikaḷkk bhūmiyil niravadhi teḷivukaḷuṇṭ"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "niṅṅaḷil tanneyumuṇṭ. enniṭṭuṁ niṅṅaḷ ateānnuṁ kaṇṭ manas'silākkunnillennēā"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "ākāśattil niṅṅaḷkk upajīvanamuṇṭ. niṅṅaḷe tākkīt ceytukeāṇṭirikkunna śikṣayuṁ"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "ākāśabhūmikaḷuṭe nāthan sākṣi. niṅṅaḷ sansāriccukeāṇṭirikkunnu ennapēāle it satyamākunnu"
        }
    ]
}