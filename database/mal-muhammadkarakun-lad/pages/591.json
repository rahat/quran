{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "ākāśaṁ sākṣi. rāvil pratyakṣappeṭunnatuṁ sākṣi"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "rāvil pratyakṣappeṭunnatentenn ninakkentaṟiyāṁ"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "tuḷaccukayaṟuṁ nakṣatramāṇat"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "orumēlnēāṭṭakkāranillāte ī lēākatt oru manuṣyanumilla"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "manuṣyan cinticcu nēākkaṭṭe; ētilninnāṇavan sr̥ṣṭikkappeṭṭatenn"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "avan sr̥ṣṭikkappeṭṭat sravikkappeṭunna veḷḷattilninnāṇ"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "mutukellinṟeyuṁ māṟellinṟeyuṁ iṭayilāṇatinṟe uṟaviṭaṁ"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "avane tirike keāṇṭuvarān kaḻivuṟṟavanāṇ allāhu"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "rahasyaṅṅaḷ vilayiruttappeṭuṁ dinamāṇatuṇṭāvuka"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "annavan enteṅkiluṁ kaḻivēā sahāyiyēā uṇṭāvilla"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "maḻapeāḻikkuṁ mānaṁ sākṣi"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "sasyaṅṅaḷ kiḷurppikkuṁ bhūmi sākṣi"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "niścayamāyuṁ iteāru nirṇāyaka vacanamāṇ"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "it tamāśayalla"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "avar kutantraṁ prayēāgiccukeāṇṭirikkuṁ"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "nāmuṁ tantraṁ prayēāgikkuṁ"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "atināl satyaniṣēdhikaḷkk nī avadhi nalkuka. ittiri nēraṁ avarkk samayamanuvadikkuka"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatanāya ninṟe nāthanṟe nāmaṁ kīrttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "avanēā sr̥ṣṭicc santulitamākkiyavan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "kramīkaricc nērvaḻi kāṇiccavan"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "mēccilppuṟaṅṅaḷ orukkiyavan"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "enniṭṭavanatine uṇaṅṅikkariñña cavaṟākki"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ninakku nāṁ ōtittaruṁ. nīyat maṟakkukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāhu ichiccateāḻike. parasyavuṁ rahasyavuṁ avanaṟiyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "eḷuppamāya vaḻi ninakku nāṁ orukkittarāṁ"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "atināl nī udbēādhippikkuka- udbēādhanaṁ upakarikkumeṅkil"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "daivabhayamuḷḷavan udbēādhanaṁ uḷkkeāḷḷuṁ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "keāṭiya nirbhāgyavān atil ninn akalukayuṁ ceyyuṁ"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "avanēā, kaṭhinamāya narakattīyil kiṭanneriyunnavan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnīṭ avanatil marikkukayilla; jīvikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tīrccayāyuṁ viśud'dhi variccavan vijayiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "avan tanṟe nāthanṟe nāmamēārttu. aṅṅane avan namaskariccu"
        }
    ]
}