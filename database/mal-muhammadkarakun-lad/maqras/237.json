{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatanāya ninṟe nāthanṟe nāmaṁ kīrttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "avanēā sr̥ṣṭicc santulitamākkiyavan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "kramīkaricc nērvaḻi kāṇiccavan"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "mēccilppuṟaṅṅaḷ orukkiyavan"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "enniṭṭavanatine uṇaṅṅikkariñña cavaṟākki"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ninakku nāṁ ōtittaruṁ. nīyat maṟakkukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāhu ichiccateāḻike. parasyavuṁ rahasyavuṁ avanaṟiyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "eḷuppamāya vaḻi ninakku nāṁ orukkittarāṁ"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "atināl nī udbēādhippikkuka- udbēādhanaṁ upakarikkumeṅkil"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "daivabhayamuḷḷavan udbēādhanaṁ uḷkkeāḷḷuṁ"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "keāṭiya nirbhāgyavān atil ninn akalukayuṁ ceyyuṁ"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "avanēā, kaṭhinamāya narakattīyil kiṭanneriyunnavan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnīṭ avanatil marikkukayilla; jīvikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tīrccayāyuṁ viśud'dhi variccavan vijayiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "avan tanṟe nāthanṟe nāmamēārttu. aṅṅane avan namaskariccu"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "ennāl niṅṅaḷ ī lēāka jīvitattināṇ prāmukhyaṁ nalkunnat"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "paralēākamāṇ ēṟṟaṁ uttamavuṁ ēṟe śāśvatavuṁ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "sanśayaṁ vēṇṭā, it pūrva vēdaṅṅaḷilumuṇṭ"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "athavā, ibṟāhīminṟeyuṁ mūsāyuṭeyuṁ granthattāḷukaḷil"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "āvaraṇaṁ ceyyunna mahāvipattinṟe vārtta ninakku vannettiyēā"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "ann cila mukhaṅṅaḷ pēṭiccaraṇṭavayāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "adhvānicc taḷarnnavayuṁ"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "cuṭṭeriyuṁ narakattilavar cennettuṁ"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "tiḷaccu maṟiyunna uṟavayilninnāṇavarkk kuṭikkān kiṭṭuka"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "kaypuḷḷa muḷceṭiyil ninnallāte avarkkeārāhāravumilla"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "at śarīratte pēāṣippikkilla. viśappinu śamanamēkukayumilla"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "ennāl maṟṟu cila mukhaṅṅaḷ ann prasannaṅṅaḷāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "taṅṅaḷuṭe karmaṅṅaḷekkuṟicc santr̥ptaruṁ"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "avar atyunnatamāya svargīyārāmattilāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "viṭuvākkukaḷ aviṭe kēḷkkukayilla"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "aviṭe oḻukunna aruviyuṇṭ"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "uyarttiyeārukkiya mañcaṅṅaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "tayyāṟākkivecca pānapātraṅṅaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "nirattivecca talayaṇakaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "parattivecca paravatānikaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "avar nēākkunnillē? oṭṭakatte; atine eṅṅane sr̥ṣṭiccuvenn"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "ākāśatte; atine evvidhaṁ uyarttiyenn"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "parvataṅṅaḷe, avaye eṅṅane sthāpiccuvenn"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "bhūmiye, atine eṅṅane viśālamākkiyenn"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "atināl nī udbēādhippikkuka. nī orudbēādhakan mātramāṇ"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "nī avaruṭe mēl nirbandhaṁ celuttunnavanalla"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "ār pintiriyukayuṁ satyatte taḷḷippaṟayukayuṁ ceyyunnuvēā"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "avane allāhu kaṭhinamāyi śikṣikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "niścayamāyuṁ nam'muṭe aṭuttēkkāṇ avaruṭe maṭakkaṁ"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "pinne avaruṭe vicāraṇayuṁ nam'muṭe cumatalayilāṇ"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "prabhātaṁ sākṣi"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "pattu rāvukaḷ sākṣi"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "iraṭṭayuṁ oṟṟayuṁ sākṣi"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "rāvu sākṣi- atu kaṭannupēāyikkeāṇṭirikke"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "kāryamaṟiyunnavan avayil śapathamuṇṭēā"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "ād janataye ninṟe nāthan entu ceytuvenn nī kaṇṭillē"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "unnatastūpaṅṅaḷuṭe uṭamakaḷāya iṟaṁ gēātratte"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "avareppēāle śaktarāyeāru janata maṟṟeāru nāṭṭiluṁ sr̥ṣṭikkappeṭṭiṭṭilla"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "tāḻvarakaḷil pāṟaveṭṭippeāḷicc pārppiṭaṅṅaḷuṇṭākkiya thamūd gēātratteyuṁ"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "āṇikaḷuṭe āḷāya phaṟavēāneyuṁ"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "avarēā, ā nāṭukaḷil atikramaṁ pravartticcavarāyirunnu"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "avaraviṭe kuḻappaṁ peruppiccu"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "appēāḷ ninṟe nāthan avarkkumēl śikṣayuṭe cāṭṭavār varṣiccu"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "ninṟe nāthan patisthalattu tanneyuṇṭ; tīrcca"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "ennāl manuṣyane avanṟe nāthan parīkṣikkukayuṁ, aṅṅane avane ādarikkukayuṁ anugrahikkukayuṁ ceytāl avan paṟayuṁ: “enṟe nāthan enne ādariccirikkunnu.”"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "ennāl allāhu avane parīkṣikkukayuṁ, aṅṅane avanṟe jīvitavibhavaṁ parimitappeṭuttukayuṁ ceytālēā, avan paṟayuṁ: “enṟe nāthan enne nindiccirikkunnu.”"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "kāryaṁ atalla; niṅṅaḷ anāthaye parigaṇikkunnilla"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "agatikk annaṁ nalkān prērippikkunnumilla"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "pāramparyamāyikkiṭṭiya svatt vārikkūṭṭi veṭṭiviḻuṅṅukayuṁ ceyyunnu"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "dhanatte niṅṅaḷ atiraṟṟ snēhikkunnu"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "atalla; bhūmiyāke iṭiccu nirappākkukayuṁ"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "ninṟe nāthanuṁ aṇiyaṇiyāyi malakkukaḷuṁ varikayuṁ"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "ann narakatte niṅṅaḷuṭe aṭuttēkk keāṇṭuvarikayuṁ ceyyumpēāḷ; ann manuṣyan ellāṁ ōrmavaruṁ. ā samayatt ōrma vanniṭṭentu kāryaṁ"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "avan paṟayuṁ: ayyēā, enṟe ī jīvitattināyi ñān nēratte ceytuveccirunneṅkil"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "annāḷil allāhu śikṣikkuṁ vidhaṁ maṟṟāruṁ śikṣikkukayilla"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "avan piṭiccukeṭṭumpēāle maṟṟāruṁ piṭiccukeṭṭukayumilla"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "allayēā śānti nēṭiya ātmāvē"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "nī ninṟe nāthaṅkalēkk tr̥ptippeṭṭavanāyuṁ tr̥pti nēṭiyavanāyuṁ tiriccu celluka"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "aṅṅane enṟe uttama dāsanmāruṭe kūṭṭattil pravēśiccu keāḷḷuka"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "enṟe svargattil pravēśiccukeāḷḷuka"
        }
    ]
}