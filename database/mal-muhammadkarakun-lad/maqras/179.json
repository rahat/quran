{
    "maqras": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "akramaṁ pravartticcavareyuṁ avaruṭe iṇakaḷeyuṁ avar ārādhiccirunnavayeyuṁ niṅṅaḷ orumiccukūṭṭuka"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "allāhuvekkūṭāte; enniṭṭavareyellāṁ niṅṅaḷ narakattilēkkuḷḷa vaḻiyil nayikkuka\" enna kalpanayuṇṭākuṁ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "avareyeānn nirttū avare cēādyaṁ ceyyēṇṭatuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "alla; niṅṅaḷkkentupaṟṟi? niṅṅaḷ parasparaṁ sahāyikkunnillallēā"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "ennāl avarinn kīḻeātuṅṅiyavarāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "avar cēritiriññ parasparaṁ cēādyaṁ ceyyuṁ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "anuyāyikaḷ paṟayuṁ: \"niṅṅaḷ nanma camaññ ñaṅṅaḷuṭe aṭutt vannirunnuvallēā"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "nētākkaḷ maṟupaṭi paṟayuṁ: \"niṅṅaḷ svayantanne satyaviśvāsikaḷāyirunnilla"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "ñaṅṅaḷkk niṅṅaḷuṭemēl oradhikāravumuṇṭāyirunnillallēā. ennalla; niṅṅaḷ svayantanne atikramikaḷāya janamāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "aṅṅane nam'muṭe nāthanṟe śikṣayuṭe vacanaṁ satyamāyi pularnnirikkunnu. tīrccayāyuṁ nāmatanubhavikkān pēāvukayāṇ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "aṅṅane ñaṅṅaḷ niṅṅaḷe vaḻiteṟṟiccu. tīrccayāyuṁ ñaṅṅaḷ svayaṁ vaḻipiḻaccavarāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "niścayamāyuṁ ann avarellāṁ śikṣayil paṅkāḷikaḷāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "uṟappāyuṁ kuṟṟavāḷikaḷēāṭ nāṁ aṅṅanetanneyāṇ ceyyuka"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "“allāhuvallāte daivamille”nn avarēāṭ paṟaññāl avar ahaṅkārattēāṭe mukhaṁ tirikkumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "avariṅṅane cēādikkumāyirunnu: \"bhrāntanāya oru kavikku vēṇṭi ñaṅṅaḷ ñaṅṅaḷuṭe daivaṅṅaḷe upēkṣikkaṇamennēā"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "ennāl satyavumāyāṇ addēhaṁ vannettiyat. daivadūtanmāreyellāṁ addēhaṁ śarivecciṭṭumuṇṭ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "tīrccayāyuṁ niṅṅaḷ nēāvēṟiya śikṣa anubhavikkēṇṭavar tanne"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "niṅṅaḷ pravartticcukeāṇṭirunnatinṟe pratiphalaṁ mātramē niṅṅaḷkku nalkukayuḷḷū"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷkkeāḻike"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "avarkkāṇ aṟiyappeṭṭa vibhavaṅṅaḷuḷḷat"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "palataraṁ paḻaṅṅaḷ. avaraviṭe ādaraṇīyarumāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "anugr̥hītamāya svargīyārāmaṅṅaḷil"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "mañcaṅṅaḷil abhimukhamāyi irikkunnavarāyirikkuṁ avar"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "saviśēṣamāya uṟavuveḷḷaṁ niṟacca kēāppakaḷ avarkkiṭayil kaṟaṅṅikkeāṇṭirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "veḷuttatuṁ kuṭikkunnavarkk atyadhikaṁ āsvādyakaravumāya pānīyaṁ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "at dēhattineāṭṭuṁ dēāṣanvaruttilla. atuvaḻi avarkk lahari bādhikkukayumilla"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "avaruṭe aṭutt nēāṭṭaṁ niyantrikkunnavaruṁ viśālākṣikaḷumāya kulīnakaḷuṇṭāyirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "sūkṣikkappeṭṭa muṭṭakaḷ pēālirikkuṁ avar"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "avar parasparaṁ abhimukhīkaricc an'yēān'yaṁ anvēṣiccukeāṇṭirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "avarileārāḷ paṟayuṁ: \"tīrccayāyuṁ enikkeāru kūṭṭukāranuṇṭāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "avan cēādikkāṟuṇṭāyirunnu: “nī paralēākatte śarivekkunnavanāṇēā"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "“nāṁ maricc maṇṇuṁ ellumāyi māṟiyāluṁ namukk nam'muṭe karmaphalaṁ kiṭṭumenna vādatte aṅgīkarikkunnavanuṁ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "tuṭarnn ayāḷ paṟayuṁ: \"niṅṅaḷ ā satyaniṣēdhiye ettinēākkunnuṇṭēā"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "aṅṅane addēhamavane ettinēākkuṁ. appēāḷ narakattinṟe naṭuvilavane kāṇuṁ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "addēhamavanēāṭ paṟayuṁ: \"allāhu tanne satyaṁ. nīyenneyuṁ naśippikkumāyirunnēne"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "enṟe nāthanṟe anugrahamillāyirunneṅkil ñānuṁ narakattil hājarākkappeṭunnavaril peṭumāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "ini namukk maraṇamillallēā"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "nam'muṭe ādyatte ā maraṇamallāte. ini nāṁ śikṣikkappeṭukayumilla"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "tīrccayāyuṁ itutanneyāṇ mahattāya vijayaṁ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "itupēāluḷḷa nēṭṭaṅṅaḷkkuvēṇṭiyāṇ paṇiyeṭukkunnavareākkeyuṁ śramikkēṇṭat"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "itēā atēā sakhūṁ maramēā ētāṇ uttamamāya salkkāraṁ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "tīrccayāyuṁ nāmatine akramikaḷkkeāru parīkṣaṇamākkiyirikkunnu"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "narakattinṟe aṭittaṭṭilninn muḷaccupeāṅṅunna maramāṇat"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "atinṟe kulakaḷ cekuttānmāruṭe talakaḷ pēālirikkuṁ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "narakavāsikaḷ at tinnuṁ. aṅṅane atukeāṇṭ avar vayaṟ niṟakkuṁ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "tuṭarnn avarkk atinumīte kuṭikkān cuṭṭupeāḷḷunna veḷḷamāṇ kiṭṭuka"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "pinne tīrccayāyuṁ avaruṭe maṭakkaṁ narakattīyilēkkutanne"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "sanśayamilla; avar taṅṅaḷuṭe pūrvikare kaṇṭettiyat tīrttuṁ vaḻipiḻaccavarāyāṇ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "enniṭṭuṁ avar ā pūrvikaruṭe kālppāṭukaḷ tanne tālparyattēāṭe pintuṭarnnu"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "avarkkumumpe avaruṭe pūrvikarilēṟe pēruṁ vaḻipiḻaccirunnu"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "avaril nāṁ munnaṟiyippukāre ayacciṭṭuṇṭāyirunnu"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "nēākkū; ā munnaṟiyipp nalkappeṭṭavaruṭe antyaṁ evvidhamāyirunnuvenn"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "allāhuvinṟe ātmārthatayuḷḷa aṭimakaḷuṭēteāḻike"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "nūh nam'mēāṭ prārthiccu. appēāḷ uttaraṁ nalkiyavan etra anugr̥hītan"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "addēhatteyuṁ addēhattinṟe kūṭeyuḷḷavareyuṁ nāṁ van durantattilninn rakṣiccu"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "addēhattinṟe santatikaḷe nāṁ bhūmiyil bākkiyākki"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "pinnāle vannavaril addēhattinṟe salkkīrtti nilanirtti"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "muḻuvan lēākavāsikaḷiluṁ nūhin samādhānaṁ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "tīrccayāyuṁ avvidhamāṇ nāṁ sadvr̥ttarkk pratiphalaṁ nalkuka"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "sanśayamilla; addēhaṁ nam'muṭe satyaviśvāsikaḷāya dāsanmāril peṭṭavanāṇ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "pinnīṭ maṟṟuḷḷavare nāṁ mukkikkeānnu"
        }
    ]
}