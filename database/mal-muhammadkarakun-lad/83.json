{
    "chapter": [
        {
            "chapter": 83,
            "verse": 1,
            "text": "kaḷḷattāppukārkk nāśaṁ"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "avar janaṅṅaḷilninn aḷanneṭukkumpēāḷ tikavu varuttuṁ"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "janaṅṅaḷkk aḷannēā tūkkiyēā keāṭukkumpēāḷ kuṟavu varuttukayuṁ ceyyuṁ"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "avarēārkkunnillē; taṅṅaḷ uyirtteḻunnēlpikkappeṭunnavarāṇenn"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "bhīkaramāya oru dinattil"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "prapañcanāthaṅkal janaṁ vannu nilkkunna dinaṁ"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "sanśayamilla; kuṟṟavāḷikaḷuṭe karm'marēkha sijjīnil tanne"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "sijjīn ennāl entenn ninakkentaṟiyāṁ"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "ateāru likhita rēkhayāṇ"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "annāḷil nāśaṁ satyaniṣēdhikaḷkkāṇ"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "avarēā, pratiphalanāḷine kaḷḷamākki taḷḷunnavar"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "atikramiyuṁ aparādhiyumallāte āruṁ atine taḷḷippaṟayukayilla"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "nam'muṭe sandēśaṁ ōtikkēḷppikkumpēāḷ avan paṟayuṁ: “it pūrvikaruṭe peāṭṭakkathakaḷāṇ.”"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "alla. avar ceytukūṭṭunna kuṟṟaṅṅaḷ avaruṭe hr̥dayaṅṅaḷinmēl kaṟayāyi paṟṟippiṭiccirikkukayāṇ"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "nis'sanśayaṁ; ā dinattilavar taṅṅaḷuṭe nāthane darśikkunnat vilakkappeṭuṁ"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "pinneyavar kattikkāḷunna narakattīyil kaṭanneriyuṁ"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "pinnīṭ avarēāṭ paṟayuṁ: niṅṅaḷennuṁ niṣēdhiccukeāṇṭirunna śikṣayāṇit"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "sanśayamilla; sukarmikaḷuṭe karm'marēkha illiyyīnilāṇ"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "illiyyīne sambandhicc ninakkentaṟiyāṁ"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "ateāru likhita rēkhayāṇ"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "daivasāmīpyaṁ sid'dhiccavar atinu sākṣikaḷāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "sukarmikaḷ sukhānugrahaṅṅaḷilāyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "cārumañcaṅṅaḷilirunn avarellāṁ nēākkikkāṇuṁ"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "avaruṭe mukhaṅṅaḷil divyānugrahaṅṅaḷuṭe śēābha ninakku kaṇṭaṟiyāṁ"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "aṭaccu mudravecca pātraṅṅaḷile pavitra madyaṁ avar kuṭippikkappeṭuṁ"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "atinṟe mudra kastūrikeāṇṭāyirikkuṁ. matsarikkunnavar atināyi matsarikkaṭṭe"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "ā pānīyattinṟe cēruva tasnīṁ āyirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "atēā, divyasānnidhyaṁ sid'dhiccavar kuṭikkunna uṟavayāṇat"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "kuṟṟavāḷikaḷ satyaviśvāsikaḷe kaḷiyākki cirikkumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "avaruṭe arikilūṭe naṭannupēākumpēāḷ avar parihāsattēāṭe kaṇṇiṟukkumāyirunnu"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "avar taṅṅaḷuṭe kuṭumbaṅṅaḷilēkk rasiccullasiccāṇ tiriccu cennirunnat"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "avar satyaviśvāsikaḷe kaṇṭāl parasparaṁ paṟayumāyirunnu: \"ikkūṭṭar vaḻipiḻaccavar tanne; tīrcca.”"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "satyaviśvāsikaḷuṭe mēlnēāṭṭakkārāyi ivareyāruṁ cumatalappeṭuttiyiṭṭilla"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "ennālann ā satyaviśvāsikaḷ satyaniṣēdhikaḷe kaḷiyākkiccirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "avar cārumañcaṅṅaḷilirunn ivare nēākkikkeāṇṭirikkuṁ"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "satyaniṣēdhikaḷkk avar pravartticcukeāṇṭirunnatin pratiphalaṁ kiṭṭikkaḻiññēā enn"
        }
    ]
}