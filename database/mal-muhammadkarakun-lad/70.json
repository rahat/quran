{
    "chapter": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "sambhavikkānirikkunna śikṣaye sambandhicc oranvēṣakan ārāññuvallēā"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "at satyaniṣēdhikaḷkkuḷḷatāṇ. atine taṭayunna ārumilla"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "caviṭṭupaṭikaḷuṭe uṭamayāya allāhuvil ninnuḷḷatāṇat"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "malakkukaḷuṁ pariśud'dhātmāvuṁ avanṟe sannidhiyilēkk kayaṟippēākunnu. ampatināyiraṁ keāllaṁ dairghyamuḷḷa oru dinattil"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "atināl kṣamikkuka. manēāharamāya kṣama"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "avarat akaleyāyāṇ kāṇunnat"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "nāmēā aṭuttāyuṁ kāṇunnu"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "ann ākāśaṁ urukiya lēāhaṁ pēāleyākuṁ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "malakaḷ kaṭaññeṭutta rēāmaṁ pēāleyuṁ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "ann oruṟṟavanuṁ tanṟe tēāḻane tēṭukayilla"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "avaran'yēān'yaṁ kāṇunnuṇṭākuṁ. appēāḷ kuṟṟavāḷi keāticcupēākuṁ: annāḷile śikṣayilninneāḻivākān makkaḷe paṇayaṁ nalkiyālēā"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "sahadharmiṇiyeyuṁ sahēādaraneyuṁ nalkiyālēā"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "tanikk abhayamēkippēānna kuṭumbatteyuṁ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "bhūmiyiluḷḷa maṟṟellāṟṟineyuṁ. aṅṅane tān rakṣappeṭṭirunneṅkil"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "vēṇṭa! at kattikkāḷunna narakattīyāṇ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "teāli uriccu kaḷayunna tī"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "satyattēāṭ puṟaṁ tiriyukayuṁ pintiriññu pēāvukayuṁ ceytavare at viḷiccuvaruttuṁ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "dhanaṁ śēkharicc sūkṣiccuveccavareyuṁ"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "manuṣyan kṣama keṭṭavanāyāṇ sr̥ṣṭikkappeṭṭat"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "vipatt varumpēāḷ avan veprāḷaṁ kāṭṭuṁ"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "nēṭṭaṁ kiṭṭiyālēā keṭṭippūṭṭivekkuṁ"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "namaskarikkunnavareāḻike"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "avar namaskārattil niṣṭha pularttunnavarāṇ"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "avaruṭe dhanattil nirṇitamāya avakāśamuṇṭ"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "cēādiccettunnavarkkuṁ prāthamikāvaśyaṅṅaḷkku vakayillāttavarkkuṁ"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "vidhidinaṁ satyamāṇenn aṅgīkarikkunnavarāṇavar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "taṅṅaḷuṭe nāthanṟe śikṣaye pēṭikkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "avaruṭe nāthanṟe śikṣayekkuṟicc nirbhayarākāvatalla; tīrcca"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "avar taṅṅaḷuṭe sadācāraniṣṭha sanrakṣiccu pēārunnavarāṇ"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "taṅṅaḷuṭe bhāryamārilēā adhīnatayiluḷḷavarilēā oḻike. ivarumāyi bandhappeṭunnat ākṣēpārhamalla"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "ennāl atinappuṟaṁ āgrahikkunnavarārēā avaratre atikramikaḷ"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "taṅṅaḷuṭe vaśamuḷḷa sūkṣippusvattukkaḷ sanrakṣikkunnavaruṁ karār pālikkunnavarumāṇavar"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "taṅṅaḷuṭe sākṣyaṅṅaḷ satyasandhamāyi pūrttīkarikkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "namaskāraṁ niṣṭhayēāṭe nirvahikkunnavaruṁ"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "avar svargattil atyadhikaṁ ādarikkappeṭunnavarāyirikkuṁ"
        },
        {
            "chapter": 70,
            "verse": 36,
            "text": "ī satyaniṣēdhikaḷkk entupaṟṟi? ninṟe nēre pāññuvarikayāṇallēā avar"
        },
        {
            "chapter": 70,
            "verse": 37,
            "text": "iṭattuninnuṁ valattuninnuṁ kūṭṭaṁ kūṭṭamāyi"
        },
        {
            "chapter": 70,
            "verse": 38,
            "text": "avarēārēāruttaruṁ tān anugr̥hīta svargattil kaṭakkumenn keātikkukayāṇēā"
        },
        {
            "chapter": 70,
            "verse": 39,
            "text": "orikkalumilla! avarkkutanne nannāyaṟiyāvunna vastuvil ninnāṇ nāmavare paṭaccat"
        },
        {
            "chapter": 70,
            "verse": 40,
            "text": "vēṇṭa, udayāstamaya sthānaṅṅaḷuṭe nāthanṟe pēril ñānitā satyaṁ ceyyunnu. nis'sanśayaṁ nāṁ kaḻivuṟṟavanāṇ"
        },
        {
            "chapter": 70,
            "verse": 41,
            "text": "avaruṭe sthānatt avarekkāḷ uttamamāya janataye keāṇṭuvarān ; nam'me āruṁ maṟikaṭakkukayilla"
        },
        {
            "chapter": 70,
            "verse": 42,
            "text": "atināl avare viṭṭēkkuka. avarkku tākkītu nalkappeṭṭa dinaṁ varunvare avar taṅṅaḷuṭe tēānnivāsaṅṅaḷiluṁ durvr̥ttikaḷiluṁ muḻuki kaḻiyaṭṭe"
        },
        {
            "chapter": 70,
            "verse": 43,
            "text": "avar taṅṅaḷuṭe śavakuṭīraṅṅaḷil ninn puṟappeṭṭ ōṭiyaṇayunna dinamāṇat. taṅṅaḷuṭe lakṣyasthānamāya nāṭṭakkuṟiyilēkk ōṭiyeāḻukunna pēāle"
        },
        {
            "chapter": 70,
            "verse": 44,
            "text": "kaṇṇukaḷ tāṇupēāya avasthayilāyirikkuṁ annavar. apamānaṁ avare āvaraṇaṁ ceytirikkuṁ. avarkk munnaṟiyippu nalkappeṭṭirunna dinaṁ atatre"
        }
    ]
}