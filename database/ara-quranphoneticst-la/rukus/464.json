{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "Kadhabat Thamudu Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "Faqalu 'Abasharaan Minna Wahidaan Nattabi`uhu 'Inna 'Idhaan Lafi Đalalin Wa Su`urin"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "A'uulqiya Adh-Dhikru `Alayhi Min Baynina Bal Huwa Kadhabun 'Ashirun"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "Saya`lamuna Ghadaan Mani Al-Kadhabu Al-'Ashiru"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "Inna Mursilu An-Naqati Fitnatan Lahum Fartaqibhum Wa Astabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "Wa Nabbi'hum 'Anna Al-Ma'a Qismatun Baynahum Kullu Shirbin Muhtađarun"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "Fanadaw Sahibahum Fata`ata Fa`aqara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "Fakayfa Kana `Adhabi Wa Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "Inna 'Arsalna `Alayhim Sayhatan Wahidatan Fakanu Kahashimi Al-Muhtaziri"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "Wa Laqad Yassarna Al-Qur'ana Lildhikri Fahal Min Muddakirin"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "Kadhabat Qawmu Lutin Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "Inna 'Arsalna `Alayhim Hasibaan 'Illa 'Ala Lutin Najjaynahum Bisaharin"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "Ni`matan Min `Indina Kadhalika Najzi Man Shakara"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "Wa Laqad 'Andharahum Batshatana Fatamaraw Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "Wa Laqad Rawaduhu `An Đayfihi Fatamasna 'A`yunahum Fadhuqu `Adhabi Wa Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "Wa Laqad Sabbahahum Bukratan `Adhabun Mustaqirrun"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "Fadhuqu `Adhabi Wa Nudhuri"
        },
