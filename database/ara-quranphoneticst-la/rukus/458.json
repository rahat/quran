{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "Wa At-Turi"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "Wa Kitabin Masturin"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "Fi Raqqin Manshurin"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "Wa Al-Bayti Al-Ma`muri"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "Wa As-Saqfi Al-Marfu`i"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "Wa Al-Bahri Al-Masjuri"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "Inna `Adhaba Rabbika Lawaqi`un"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "Ma Lahu Min Dafi`in"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "Yawma Tamuru As-Sama'u Mawraan"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "Wa Tasiru Al-Jibalu Sayraan"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "Fawaylun Yawma'idhin Lilmukadhibina"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "Al-Ladhina Hum Fi Khawđin Yal`abuna"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "Yawma Yuda``una 'Ila Nari Jahannama Da``aan"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "Hadhihi An-Naru Allati Kuntum Biha Tukadhibuna"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "Afasihrun Hadha 'Am 'Antum La Tubsiruna"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "Aslawha Fasbiru 'Aw La Tasbiru Sawa'un `Alaykum 'Innama Tujzawna Ma Kuntum Ta`maluna"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "Inna Al-Muttaqina Fi Jannatin Wa Na`imin"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "Fakihina Bima 'Atahum Rabbuhum Wa Waqahum Rabbuhum `Adhaba Al-Jahimi"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "Kulu Wa Ashrabu Hani'aan Bima Kuntum Ta`maluna"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "Muttaki'ina `Ala Sururin Masfufatin Wa Zawwajnahum Bihurin `Inin"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "Wa Al-Ladhina 'Amanu Wa Attaba`at/hum Dhurriyatuhum Bi'imanin 'Alhaqna Bihim Dhurriyatahum Wa Ma 'Alatnahum Min `Amalihim Min Shay'in Kullu Amri'in Bima Kasaba Rahinun"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "Wa 'Amdadnahum Bifakihatin Wa Lahmin Mimma Yashtahuna"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "Yatanaza`una Fiha Ka'saan La Laghwun Fiha Wa La Ta'thimun"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "Wa Yatufu `Alayhim Ghilmanun Lahum Ka'annahum Lu'ulu'uun Maknunun"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "Wa 'Aqbala Ba`đuhum `Ala Ba`đin Yatasa'aluna"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "Qalu 'Inna Kunna Qablu Fi 'Ahlina Mushfiqina"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "Famanna Allahu `Alayna Wa Waqana `Adhaba As-Samumi"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "Inna Kunna Min Qablu Nad`uhu 'Innahu Huwa Al-Barru Ar-Rahimu"
        }
    ]
}