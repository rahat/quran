        {
            "chapter": 36,
            "verse": 1,
            "text": "Ya -Sin"
        },
        {
            "chapter": 36,
            "verse": 2,
            "text": "Wa Al-Qur'ani Al-Hakimi"
        },
        {
            "chapter": 36,
            "verse": 3,
            "text": "Innaka Lamina Al-Mursalina"
        },
        {
            "chapter": 36,
            "verse": 4,
            "text": "Ala Siratin Mustaqimin"
        },
        {
            "chapter": 36,
            "verse": 5,
            "text": "Tanzila Al-`Azizi Ar-Rahimi"
        },
        {
            "chapter": 36,
            "verse": 6,
            "text": "Litundhira Qawmaan Ma 'Undhira 'Aba'uuhum Fahum Ghafiluna"
        },
        {
            "chapter": 36,
            "verse": 7,
            "text": "Laqad Haqqa Al-Qawlu `Ala 'Aktharihim Fahum La Yu'uminuna"
        },
        {
            "chapter": 36,
            "verse": 8,
            "text": "Inna Ja`alna Fi 'A`naqihim 'Aghlalaan Fahiya 'Ila Al-'Adhqani Fahum Muqmahuna"
        },
        {
            "chapter": 36,
            "verse": 9,
            "text": "Wa Ja`alna Min Bayni 'Aydihim Saddaan Wa Min Khalfihim Saddaan Fa'aghshaynahum Fahum La Yubsiruna"
        },
        {
            "chapter": 36,
            "verse": 10,
            "text": "Wa Sawa'un `Alayhim 'A'andhartahum 'Am Lam Tundhirhum La Yu'uminuna"
        },
        {
            "chapter": 36,
            "verse": 11,
            "text": "Innama Tundhiru Mani Attaba`a Adh-Dhikra Wa Khashiya Ar-Rahmana Bil-Ghaybi Fabashirhu Bimaghfiratin Wa 'Ajrin Karimin"
        },
        {
            "chapter": 36,
            "verse": 12,
            "text": "Inna Nahnu Nuhyi Al-Mawta Wa Naktubu Ma Qaddamu Wa 'Atharahum Wa Kulla Shay'in 'Hsaynahu Fi 'Imamin Mubinin"
        }
    ]
