{
    "rukus": [
        {
            "chapter": 54,
            "verse": 1,
            "text": "Iqtarabati assaAAatu wanshaqqaalqamar"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "Wa-in yaraw ayatan yuAAridoowayaqooloo sihrun mustamirr"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "Wakaththaboo wattabaAAoo ahwaahumwakullu amrin mustaqirr"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "Walaqad jaahum mina al-anba-i mafeehi muzdajar"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "Hikmatun balighatun famatughnee annuthur"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "Fatawalla AAanhum yawma yadAAu addaAAiila shay-in nukur"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "KhushshaAAan absaruhum yakhrujoonamina al-ajdathi kaannahum jaradun muntashir"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "MuhtiAAeena ila addaAAiyaqoolu alkafiroona hatha yawmun AAasir"
        },
        {
            "chapter": 54,
            "verse": 9,
            "text": "Kaththabat qablahum qawmu noohinfakaththaboo AAabdana waqaloo majnoonun wazdujir"
        },
        {
            "chapter": 54,
            "verse": 10,
            "text": "FadaAAa rabbahu annee maghloobun fantasir"
        },
        {
            "chapter": 54,
            "verse": 11,
            "text": "Fafatahna abwaba assama-ibima-in munhamir"
        },
        {
            "chapter": 54,
            "verse": 12,
            "text": "Wafajjarna al-arda AAuyoonanfaltaqa almao AAala amrin qad qudir"
        },
        {
            "chapter": 54,
            "verse": 13,
            "text": "Wahamalnahu AAala thatialwahin wadusur"
        },
        {
            "chapter": 54,
            "verse": 14,
            "text": "Tajree bi-aAAyunina jazaanliman kana kufir"
        },
        {
            "chapter": 54,
            "verse": 15,
            "text": "Walaqad taraknaha ayatanfahal min muddakir"
        },
        {
            "chapter": 54,
            "verse": 16,
            "text": "Fakayfa kana AAathabee wanuthur"
        },
        {
            "chapter": 54,
            "verse": 17,
            "text": "Walaqad yassarna alqur-ana liththikrifahal min muddakir"
        },
        {
            "chapter": 54,
            "verse": 18,
            "text": "Kaththabat AAadun fakayfa kanaAAathabee wanuthur"
        },
        {
            "chapter": 54,
            "verse": 19,
            "text": "Inna arsalna AAalayhim reehansarsaran fee yawmi nahsin mustamirr"
        },
        {
            "chapter": 54,
            "verse": 20,
            "text": "TanziAAu annasa kaannahumaAAjazu nakhlin munqaAAir"
        },
        {
            "chapter": 54,
            "verse": 21,
            "text": "Fakayfa kana AAathabee wanuthur"
        },
        {
            "chapter": 54,
