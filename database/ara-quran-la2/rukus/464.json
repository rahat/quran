{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "Kaththabat thamoodu binnuthur"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "Faqaloo abasharan minna wahidannattabiAAuhu inna ithan lafee dalalinwasuAAur"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "Aolqiya aththikru AAalayhimin baynina bal huwa kaththabun ashir"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "SayaAAlamoona ghadan mani alkaththabual-ashir"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "Inna mursiloo annaqatifitnatan lahum fartaqibhum wastabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "Wanabbi/hum anna almaa qismatunbaynahum kullu shirbin muhtadar"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "Fanadaw sahibahum fataAAatafaAAaqar"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "Fakayfa kana AAathabee wanuthur"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "Inna arsalna AAalayhim sayhatanwahidatan fakanoo kahasheemi almuhtathir"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "Walaqad yassarna alqur-ana liththikrifahal min muddakir"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "Kaththabat qawmu lootin binnuthur"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "Inna arsalna AAalayhim hasibanilla ala lootin najjaynahum bisahar"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "NiAAmatan min AAindina kathalikanajzee man shakar"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "Walaqad antharahum batshatanafatamaraw binnuthur"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "Walaqad rawadoohu AAan dayfihifatamasna aAAyunahum fathooqoo AAathabeewanuthur"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "Walaqad sabbahahum bukratanAAathabun mustaqirr"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "Fathooqoo AAathabee wanuthur"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "Walaqad yassarna alqur-ana liththikrifahal min muddakir"
        }
    ]
