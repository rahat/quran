{
    "pages": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "Wassaffati saffa"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "Fazzajirati zajra"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "Fattaliyati thikra"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "Inna ilahakum lawahid"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "Rabbu assamawati wal-ardiwama baynahuma warabbu almashariq"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "Inna zayyanna assamaaaddunya bizeenatin alkawakib"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "Wahifthan min kulli shaytaninmarid"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "La yassammaAAoona ila almala-ial-aAAla wayuqthafoona min kulli janib"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "Duhooran walahum AAathabun wasib"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "Illa man khatifa alkhatfatafaatbaAAahu shihabun thaqib"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "Fastaftihim ahum ashaddu khalqan amman khalaqna inna khalaqnahum min teeninlazib"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "Bal AAajibta wayaskharoon"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "Wa-itha thukkiroo la yathkuroon"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "Wa-itha raaw ayatanyastaskhiroon"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "Waqaloo in hatha illasihrun mubeen"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "A-itha mitna wakunnaturaban waAAithaman a-innalamabAAoothoon"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "Awa abaona al-awwaloon"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "Qul naAAam waantum dakhiroon"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "Fa-innama hiya zajratun wahidatunfa-itha hum yanthuroon"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "Waqaloo ya waylana hathayawmu addeen"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "Hatha yawmu alfasli allatheekuntum bihi tukaththiboon"
        },
        {
            "chapter": 37,
            "verse": 22,
            "text": "Ohshuroo allatheena thalamoowaazwajahum wama kanoo yaAAbudoon"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "Min dooni Allahi fahdoohum ilasirati aljaheem"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "Waqifoohum innahum masooloon"
        }
    ]
}