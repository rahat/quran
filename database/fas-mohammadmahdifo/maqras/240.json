{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "مگر نمى‌داند كه چون آنچه در گورهاست بيرون ريخته گردد،"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "و آنچه در سينه‌هاست فاش شود،"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "در چنان روزى پروردگارشان به [حال‌] ايشان نيك آگاه است؟"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "كوبنده،"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چيست كوبنده؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه دانى كه كوبنده چيست؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزى كه مردم چون پروانه‌[هاى‌] پراكنده گردند،"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و كوه‌ها مانند پشم زده‌شده رنگين شود"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "اما هر كه سنجيده‌هايش سنگين برآيد،"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "پس وى در زندگى خوشى خواهد بود"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما هر كه سنجيده‌هايش سبك بر آيد،"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "پس جايش «هاويه» باشد"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو چه دانى كه آن چيست؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشى است سوزنده"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "تفاخر به بيشترداشتن، شما را غافل داشت"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا كارتان [و پايتان‌] به گورستان رسيد"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "نه چنين است، زودا كه بدانيد"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "باز هم نه چنين است، زودا كه بدانيد"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "هرگز چنين نيست، اگر علم‌اليقين داشتيد"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "به يقين دوزخ را مى‌بينيد"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "سپس آن را قطعاً به عين‌اليقين درمى‌يابيد"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "سپس در همان روز است كه از نعمت [روى زمين‌] پرسيده خواهيد شد"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "سوگند به عصر [غلبه حق بر باطل‌]،"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "كه واقعاً انسان دستخوش زيان است؛"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "مگر كسانى كه گرويده و كارهاى شايسته كرده و همديگر را به حق سفارش و به شكيبايى توصيه كرده‌اند"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "واى بر هر بدگوى عيبجويى،"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "كه مالى گرد آورد و برشمردش"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "پندارد كه مالش او را جاويد كرده،"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "ولى نه! قطعاً در آتش خردكننده فرو افكنده خواهد شد"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "و تو چه دانى كه آن آتش خردكننده چيست؟"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "آتش افروخته خدا[يى‌] است"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "[آتشى‌] كه به دلها مى‌رسد"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "آنان را در ميان فرامى‌گيرد"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "[آتشى كه‌] در ستونهايى دراز است"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "مگر نديدى پروردگارت با پيلداران چه كرد؟"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "آيا نيرنگشان را بر باد نداد؟"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "و بر سر آنها، دسته دسته پرندگانى «اَبابيل» فرستاد"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "[كه‌] بر آنان سنگهايى از گل [سخت‌] مى‌افكندند"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "و [سرانجام، خدا] آنان را مانند كاه جويده‌شده گردانيد"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "براى الفت‌دادن قريش،"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "الفتشان هنگام كوچ زمستان و تابستان، [خدا پيلداران را نابود كرد]"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس بايد خداوندِ اين خانه را بپرستند؛"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "همان [خدايى‌] كه در گرسنگى غذايشان داد، و از بيم [دشمن‌] آسوده‌خاطرشان كرد"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آيا كسى را كه [روز] جزا را دروغ مى‌خواند، ديدى؟"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "اين همان كس است كه يتيم را بسختى مى‌راند،"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و به خوراك‌دادن بينوا ترغيب نمى‌كند"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس واى بر نمازگزارانى"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "كه از نمازشان غافلند،"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "آنان كه ريا مى‌كنند،"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و از [دادن‌] زكات [و وسايل و مايحتاج خانه‌] خوددارى مى‌ورزند"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "ما تو را [چشمه‌] كوثر داديم،"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس براى پروردگارت نماز گزار و قربانى كن"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "دشمنت خود بى‌تبار خواهد بود"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "بگو: «اى كافران،"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "آنچه مى‌پرستيد، نمى‌پرستم"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "و آنچه مى‌پرستم، شما نمى‌پرستيد"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "و نه آنچه پرستيديد من مى‌پرستم"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "و نه آنچه مى‌پرستم شما مى‌پرستيد"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "دين شما براى خودتان، و دين من براى خودم.»"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "چون يارى خدا و پيروزى فرا رسد،"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "و ببينى كه مردم دسته‌دسته در دين خدا درآيند،"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "پس به ستايش پروردگارت نيايشگر باش و از او آمرزش خواه، كه وى همواره توبه‌پذير است"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "بريده باد دو دست ابولهب، و مرگ بر او باد"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "دارايى او و آنچه اندوخت، سودش نكرد"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "بزودى در آتشى پرزبانه درآيد"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "و زنش، آن هيمه‌كش [آتش فروز]،"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "بر گردنش طنابى از ليف خرماست"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "بگو: «اوست خداى يگانه،"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "خداى صمد [ثابت - متعالى‌]،"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "[كسى را] نزاده، و زاده نشده است،"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و هيچ كس او را همتا نيست.»"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "بگو: «پناه مى‌برم به پروردگار سپيده دم،"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از شرّ آنچه آفريده،"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از شرّ تاريكى چون فراگيرد،"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از شرّ دمندگان افسون در گره‌ها،"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "و از شرّ [هر] حسود، آنگاه كه حسد ورزد.»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "بگو: «پناه مى‌برم به پروردگار مردم،"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "پادشاه مردم،"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "معبود مردم،"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از شرّ وسوسه‌گر نهانى؛"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "آن كس كه در سينه‌هاى مردم وسوسه مى‌كند،"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "چه از جنّ و [چه از] انس.»"
        }
    ]
}