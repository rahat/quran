{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار والاى خود را به پاكى بستاى"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "همان كه آفريد و هماهنگى بخشيد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آنكه اندازه‌گيرى كرد و راه نمود"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آنكه چمنزار را برآورد؛"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "و پس [از چندى‌] آن را خاشاكى تيره‌گون گردانيد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ما بزودى [آيات خود را به وسيله سروش غيبى‌] بر تو خواهيم خواند، تا فراموش نكنى؛"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "جز آنچه خدا خواهد، كه او آشكار و آنچه را كه نهان است مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و براى تو آسانترين [راه‌] را فراهم مى‌گردانيم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "پس پند ده، اگر پند سود بخشد"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "آن كس كه ترسد، بزودى عبرت گيرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و نگون‌بخت، خود را از آن دور مى‌دارد؛"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "همان كس كه در آتشى بزرگ در آيد؛"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "آنگاه نه در آن مى‌ميرد و نه زندگانى مى‌يابد"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "رستگار آن كس كه خود را پاك گردانيد؛"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "و نام پروردگارش را ياد كرد و نماز گزارد"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "ليكن [شما] زندگى دنيا را بر مى‌گزينيد؛"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "با آنكه [جهان‌] آخرت نيكوتر و پايدارتر است"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "قطعاً در صحيفه‌هاى گذشته اين [معنى‌] هست،"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صحيفه‌هاى ابراهيم و موسى"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آيا خبر «غاشيه» به تو رسيده است؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در آن روز، چهره‌هايى زبونند،"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "كه تلاش كرده، رنج [بيهوده‌] برده‌اند"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "[ناچار] در آتشى سوزان درآيند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از چشمه‌اى داغ نوشانيده شوند"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "خوراكى جز خار خشك ندارند،"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "[كه‌] نه فربه كند، و نه گرسنگى را باز دارد"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "در آن روز، چهره‌هايى شادابند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از كوشش خود خشنودند"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشت برين‌اند"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "سخن بيهوده‌اى در آنجا نشنوند"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آن، چشمه‌اى روان باشد"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "تختهايى بلند در آنجاست"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و قدحهايى نهاده شده"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهايى پهلوى هم [چيده‌]"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرشهايى [زربفت‌] گسترده"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آيا به شتر نمى‌نگرند كه چگونه آفريده شده؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و به آسمان كه چگونه برافراشته شده؟"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و به كوه‌ها كه چگونه برپا داشته شده؟"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمين كه چگونه گسترده شده است؟"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس تذكر ده كه تو تنها تذكردهنده‌اى"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "بر آنان تسلّطى ندارى،"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر كسى كه روى بگرداند و كفر ورزد،"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "كه خدا او را به آن عذاب بزرگتر عذاب كند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "در حقيقت، بازگشت آنان به سوى ماست،"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "آنگاه حساب [خواستن از] آنان به عهده ماست"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "سوگند به سپيده‌دم،"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "و به شبهاى دهگانه،"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "و به جفت و تاق،"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "و به شب، وقتى سپرى شود"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "آيا در اين، براى خردمند [نياز به‌] سوگندى [ديگر] است؟"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "مگر ندانسته‌اى كه پروردگارت با عاد چه كرد؟"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "با عمارات ستون‌دار ارم،"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "كه مانندش در شهرها ساخته نشده بود؟"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "و با ثمود، همانان كه در درّه، تخته‌سنگها را مى‌بريدند؟"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "و با فرعون، صاحب خرگاه‌ها [و بناهاى بلند]؟"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "همانان كه در شهرها سر به طغيان برداشتند،"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "و در آنها بسيار تبهكارى كردند"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "[تا آنكه‌] پروردگارت بر سر آنان تازيانه عذاب را فرونواخت،"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "زيرا پروردگار تو سخت در كمين است"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "اما انسان، هنگامى كه پروردگارش وى را مى‌آزمايد، و عزيزش مى‌دارد و نعمت فراوان به او مى‌دهد، مى‌گويد: «پروردگارم مرا گرامى داشته است.»"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "و اما چون وى را مى‌آزمايد و روزى‌اش را بر او تنگ مى‌گرداند، مى‌گويد: «پروردگارم مرا خوار كرده است.»"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "ولى نه، بلكه يتيم را نمى‌نوازيد؛"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "و بر خوراك‌[دادن‌] بينوا همديگر را بر نمى‌انگيزيد؛"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "و ميراث [ضعيفان‌] را چپاولگرانه مى‌خوريد؛"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "و مال را دوست داريد، دوست داشتنى بسيار"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "نه چنان است، آنگاه كه زمين، سخت در هم كوبيده شود،"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "و [فرمان‌] پروردگارت و فرشته‌[ها] صف‌درصف آيند،"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "و جهنم را در آن روز [حاضر] آورند، آن روز است كه انسان پند گيرد؛ و[لى‌] كجا او را جاى پندگرفتن باشد؟"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "گويد: «كاش براى زندگانى خود [چيزى‌] پيش فرستاده بودم.»"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "پس در آن روز هيچ كس چون عذاب‌كردن او، عذاب نكند"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و هيچ كس چون دربندكشيدن او، دربند نكشد"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "اى نفس مطمئنّه،"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "خشنود و خداپسند به سوى پروردگارت بازگرد،"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "و در ميان بندگان من درآى،"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و در بهشت من داخل شو"
        }
    ]
}