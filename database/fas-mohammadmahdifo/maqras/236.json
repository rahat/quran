{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "آنگاه كه آسمان زهم بشكافد،"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "و پروردگارش را فرمان برد و [چنين‌] سزد"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "و آنگاه كه زمين كشيده شود،"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "و آنچه را كه در آن است بيرون افكند و تهى شود،"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "و پروردگارش را فرمان برد و [چنين‌] سزد"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "اى انسان، حقاً كه تو به سوى پروردگار خود بسختى در تلاشى، و او را ملاقات خواهى كرد"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "اما كسى كه كارنامه‌اش به دست راستش داده شود،"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "بزودى‌اش حسابى بس آسان كنند،"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "و شادمان به سوى كسانش باز گردد"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "و اما كسى كه كارنامه‌اش از پشت سرش به او داده شود،"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "زودا كه هلاك [خويش‌] خواهد،"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "و در آتش افروخته درآيد"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "او در [ميان‌] خانواده خود شادمان بود"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "او مى‌پنداشت كه هرگز برنخواهد گشت"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "آرى، در حقيقت، پروردگارش به او بينا بود"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "نه، نه، سوگند به شفق،"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "سوگند به شب و آنچه [شب‌] فروپوشاند،"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "سوگند به ماه چون [بَدر] تمام شود،"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "كه قطعاً از حالى به حالى برخواهيد نشست"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "پس چرا آنان باور نمى‌دارند؟"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "و چون بر آنان قرآن تلاوت مى‌شود چهره بر خاك نمى‌سايند؟"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "[نه!] بلكه آنان كه كفر ورزيده‌اند، تكذيب مى‌كنند"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "و خدا به آنچه در سينه دارند داناتر است"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "پس آنان را از عذابى دردناك خبر ده،"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "مگر كسانى كه گرويده و كارهاى شايسته كرده‌اند، كه آنان را پاداشى بى‌منّت خواهد بود"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "سوگند به آسمان آكنده ز برج،"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "و به روز موعود،"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "و به گواه و مورد گواهى،"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "مرگ بر آدم‌سوزان خندق"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "همان آتش مايه‌دار [و انبوه‌]"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "آنگاه كه آنان بالاى آن [خندق به تماشا] نشسته بودند"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "و خود بر آنچه بر [سر] مؤمنان مى‌آوردند، گواه بودند"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "و بر آنان عيبى نگرفته بودند جز اينكه به خداى ارجمند ستوده ايمان آورده بودند"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "همان [خدايى‌] كه فرمانروايى آسمانها و زمين از آن اوست و خدا[ست كه‌] بر هر چيزى گواه است"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "كسانى كه مردان و زنان مؤمن را آزار كرده و بعد توبه نكرده‌اند، ايشان راست عذاب جهنم، و ايشان راست عذاب سوزان"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "كسانى كه ايمان آورده و كارهاى شايسته كرده‌اند، براى آنان باغهايى است كه از زير [درختان‌] آن جويها روان است؛ اين است [همان‌] رستگارى بزرگ"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "آرى، عقاب پروردگارت سخت سنگين است"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "هم اوست كه [آفرينش را] آغاز مى‌كند و بازمى‌گرداند"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "و اوست آن آمرزنده دوستدار [مؤمنان‌]"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "صاحب ارجمند عرش"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "هر چه را بخواهد انجام مى‌دهد"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "آيا حديث [آن‌] سپاهيان"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "فرعون و ثمود بر تو آمد؟"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "[نه،] بلكه آنان كه كافر شده‌اند در تكذيب‌اند؛"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "با آنكه خدا از هر سو بر ايشان محيط است"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "آرى، آن قرآنى ارجمند است،"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "كه در لوحى محفوظ است"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و آن اختر شبگرد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانى كه اختر شبگرد چيست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن اختر فروزان"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر اينكه نگاهبانى بر او [گماشته شده‌] است"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس انسان بايد بنگرد كه از چه آفريده شده است؟"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آب جهنده‌اى خلق شده،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "[كه‌] از صلب مرد و ميان استخوانهاى سينه زن بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "در حقيقت، او [= خدا] بر بازگردانيدن وى بخوبى تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "آن روز كه رازها [همه‌] فاش شود،"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس او را نه نيرويى ماند و نه يارى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان بارش‌انگيز،"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "سوگند به زمين شكافدار [آماده كشت‌]،"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "[كه‌] در حقيقت، قرآن گفتارى قاطع و روشنگر است؛"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و آن شوخى نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان دست به نيرنگ مى‌زنند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و [من نيز] دست به نيرنگ مى‌زنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده، و كمى آنان را به حال خود واگذار"
        }
    ]
}