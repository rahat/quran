{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "سوگند به اين شهر،"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "و حال آنكه تو در اين شهر جاى دارى؛"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "سوگند به پدرى [چنان‌] و آن كسى را كه به وجود آورد؛"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "براستى كه انسان را در رنج آفريده‌ايم"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "آيا پندارد كه هيچ كس هرگز بر او دست نتواند يافت؟"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "گويد: «مال فراوانى تباه كردم.»"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "آيا پندارد كه هيچ كس او را نديده است؟"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "آيا دو چشمش نداده‌ايم؟"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "و زبانى و دو لب"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "و هر دو راه [خير و شر] را بدو نموديم"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "و[لى‌] نخواست از گردنه [عاقبت‌نگرى‌] بالا رود"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "و تو چه دانى كه آن گردنه [سخت‌] چيست؟"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "بنده‌اى را آزادكردن،"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "يا در روز گرسنگى، طعام‌دادن"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "به يتيمى خويشاوند،"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "يا بينوايى خاك‌نشين"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "علاوه بر اين از زمره كسانى باشد كه گرويده و يكديگر را به شكيبايى و مهربانى سفارش كرده‌اند؛"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "اينانند خجستگان"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "و كسانى كه به انكار نشانه‌هاى ما پرداخته‌اند، آنانند ناخجستگان شوم"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "بر آنان آتشى سرپوشيده احاطه دارد"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "سوگند به خورشيد و تابندگى‌اش،"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "سوگند به مه چون پى [خورشيد] رود"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "سوگند به روز چون [زمين را] روشن گرداند،"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "سوگند به شب چو پرده بر آن پوشد،"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "سوگند به آسمان و آن كس كه آن را برافراشت،"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "سوگند به زمين و آن كس كه آن را گسترد،"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "سوگند به نفس و آن كس كه آن را درست كرد؛"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "سپس پليدكارى و پرهيزگارى‌اش را به آن الهام كرد،"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "كه هر كس آن را پاك گردانيد، قطعاً رستگار شد،"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "و هر كه آلوده‌اش ساخت، قطعاً درباخت"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "[قوم‌] ثمود به سبب طغيان خود به تكذيب پرداختند"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "آنگاه كه شقى‌ترينشان بر[پا] خاست"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "پس فرستاده خدا به آنان گفت: «زنهار! ماده‌شتر خدا و [نوبت‌] آب‌خوردنش را [حرمت نهيد]»"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "و[لى‌] دروغزنش خواندند و آن [ماده‌شتر] را پى كردند، و پروردگارشان به [سزاى‌] گناهشان بر سرشان عذاب آورد و آنان را با خاك يكسان كرد"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "و از پيامد كار خويش، بيمى به خود راه نداد"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "سوگند به شب چون پرده افكند،"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "سوگند به روز چون جلوه‌گرى آغازد،"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "و [سوگند به‌] آنكه نر و ماده را آفريد،"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "كه همانا تلاش شما پراكنده است"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "اما آنكه [حق خدا را] داد و پروا داشت،"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "و [پاداش‌] نيكوتر را تصديق كرد،"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "بزودى راه آسانى پيش پاى او خواهيم گذاشت"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "و اما آنكه بخل ورزيد و خود را بى‌نياز ديد،"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "و [پاداش‌] نيكوتر را به دروغ گرفت،"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "بزودى راه دشوارى به او خواهيم نمود"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "و چون هلاك شد، [ديگر] مال او به كارش نمى‌آيد"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "همانا هدايت بر ماست"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "و در حقيقت، دنيا و آخرت از آن ماست"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "پس شما را به آتشى كه زبانه مى‌كشد هشدار دادم"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "جز نگون‌بخت‌تر[ين مردم‌] در آن درنيايد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان كه تكذيب كرد و رخ برتافت"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و پاك‌رفتارتر[ين مردم‌] از آن دور داشته خواهد شد"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان كه مال خود را مى‌دهد [براى آنكه‌] پاك شود،"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را به قصد پاداش‌يافتن نعمت نمى‌بخشد،"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "جز خواستن رضاى پروردگارش كه بسى برتر است [منظورى ندارد]"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و قطعاً بزودى خشنود خواهد شد"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "سوگند به روشنايى روز،"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "سوگند به شب چون آرام گيرد،"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "[كه‌] پروردگارت تو را وانگذاشته، و دشمن نداشته است"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "و قطعاً آخرت براى تو از دنيا نيكوتر خواهد بود"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "و بزودى پروردگارت تو را عطا خواهد داد، تا خرسند گردى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "مگر نه تو را يتيم يافت، پس پناه داد؟"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "و تو را سرگشته يافت، پس هدايت كرد؟"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "و تو را تنگدست يافت و بى‌نياز گردانيد؟"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "و اما [تو نيز به پاس نعمت ما] يتيم را ميازار،"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و گدا را مران،"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از نعمت پروردگار خويش [با مردم‌] سخن گوى"
        }
    ]
}