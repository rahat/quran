{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "چهره در هم كشيد و روى گردانيد،"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "كه آن مرد نابينا پيش او آمد؛"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانى، شايد او به پاكى گرايد،"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "يا پند پذيرد و اندرز سودش دهد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن كس كه خود را بى‌نياز مى‌پندارد،"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "تو بدو مى‌پردازى؛"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "با آنكه اگر پاك نگردد، بر تو [مسؤوليتى‌] نيست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن كس كه شتابان پيش تو آمد،"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالى كه [از خدا] مى‌ترسيد،"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو از او به ديگران مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "زنهار [چنين مكن‌] اين [آيات‌] پندى است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "تا هر كه خواهد، از آن پند گيرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در صحيفه‌هايى ارجمند،"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "والا و پاك‌شده،"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست فرشتگانى،"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "ارجمند و نيكوكار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "كشته باد انسان، چه ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "او را از چه چيز آفريده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه‌اى خلقش كرد و اندازه مقررش بخشيد"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راه را بر او آسان گردانيد"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "آنگاه به مرگش رسانيد و در قبرش نهاد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس چون بخواهد او را برانگيزد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "ولى نه! هنوز آنچه را به او دستور داده، به جاى نياورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس انسان بايد به خوراك خود بنگرد،"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "كه ما آب را به صورت بارشى فرو ريختيم؛"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "آنگاه زمين را با شكافتنى [لازم‌] شكافتيم؛"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پس در آن، دانه رويانيديم"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگور و سبزى،"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زيتون و درخت خرما،"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغهاى انبوه،"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و ميوه و چراگاه،"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "[تا وسيله‌] استفاده شما و دامهايتان باشد"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون فرياد گوش‌خراش دررسد؛"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى كه آدمى از برادرش،"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادرش و پدرش"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از همسرش و پسرانش مى‌گريزد،"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "در آن روز، هر كسى از آنان را كارى است كه او را به خود مشغول مى‌دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "در آن روز، چهره‌هايى درخشانند،"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندان [و] شادانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و در آن روز، چهره‌هايى است كه بر آنها غبار نشسته،"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "[و] آنها را تاريكى پوشانده است؛"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "آنان همان كافران بدكارند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "آنگاه كه خورشيد به هم درپيچد،"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و آنگه كه ستارگان همى‌تيره شوند،"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و آنگاه كه كوهها به رفتار آيند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "وقتى شتران ماده وانهاده شوند،"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و آنگه كه وحوش را همى‌گرد آرند،"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "درياها آنگه كه جوشان گردند،"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و آنگاه كه جانها به هم درپيوندند،"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "پرسند چو زان دخترك زنده به‌گور"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "به كدامين گناه كشته شده است؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و آنگاه كه نامه‌ها زهم بگشايند،"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و آنگاه كه آسمان زجا كنده شود،"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و آنگه كه جحيم را برافروزانند،"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و آنگه كه بهشت را فرا پيش آرند،"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "هر نَفْس بداند چه فراهم ديده"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "نه، نه! سوگند به اختران گردان،"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "[كز ديده‌] نهان شوند و از نو آيند،"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "سوگند به شب چون پشت گرداند،"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "سوگند به صبح چون دميدن گيرد،"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "كه [قرآن‌] سخن فرشته بزرگوارى است"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "نيرومند [كه‌] پيش خداوند عرش، بلندپايگاه است"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "در آنجا [هم‌] مطاع [و هم‌] امين است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و رفيق شما مجنون نيست؛"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و قطعاً آن [فرشته وحى‌] را در افق رخشان ديده"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او در امر غيب بخيل نيست"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و [قرآن‌] نيست سخن ديو رجيم"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس به كجا مى‌رويد؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "اين [سخن‌] بجز پندى براى عالميان نيست؛"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "براى هر يك از شما كه خواهد به راه راست رود"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و تا خدا، پروردگار جهانها، نخواهد، [شما نيز] نخواهيد خواست"
        }
    ]
}