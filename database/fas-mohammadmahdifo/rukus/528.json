{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و آن اختر شبگرد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانى كه اختر شبگرد چيست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "آن اختر فروزان"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر اينكه نگاهبانى بر او [گماشته شده‌] است"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس انسان بايد بنگرد كه از چه آفريده شده است؟"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آب جهنده‌اى خلق شده،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "[كه‌] از صلب مرد و ميان استخوانهاى سينه زن بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "در حقيقت، او [= خدا] بر بازگردانيدن وى بخوبى تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "آن روز كه رازها [همه‌] فاش شود،"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس او را نه نيرويى ماند و نه يارى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "سوگند به آسمان بارش‌انگيز،"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "سوگند به زمين شكافدار [آماده كشت‌]،"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "[كه‌] در حقيقت، قرآن گفتارى قاطع و روشنگر است؛"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و آن شوخى نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان دست به نيرنگ مى‌زنند"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و [من نيز] دست به نيرنگ مى‌زنم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده، و كمى آنان را به حال خود واگذار"
        }
    ]
}