{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "نه چنين است [كه مى‌پندارند!] سوگند به ماه،"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "و سوگند به شامگاه چون پشت كند،"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "و سوگند به بامداد چون آشكار شود،"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "كه آيات [قرآن‌] از پديده‌هاى بزرگ است"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "بشر را هشداردهنده است"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "هر كه از شما را كه بخواهد پيشى جويد يا بازايستد"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "هر كسى در گرو دستاورد خويش است،"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "بجز ياران دست راست"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "در ميان باغها. از يكديگر مى‌پرسند،"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "درباره مجرمان"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "«چه چيز شما را در آتش [سَقَر] درآورد؟»"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "گويند: «از نمازگزاران نبوديم،"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "و بينوايان را غذا نمى‌داديم،"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "با هرزه‌درايان هرزه‌درايى مى‌كرديم،"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "و روز جزا را دروغ مى‌شمرديم،"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "تا مرگ ما در رسيد.»"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "از اين رو شفاعت شفاعت‌كنندگان به حال آنها سودى نمى‌بخشد"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "چرا آنها از تذكر روى گردانند؟"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "گويى گورخرانى رميده‌اند،"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "كه از (مقابل) شيرى فرار كرده‌اند"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلكه هر كدام از آنها انتظار دارد نامه جداگانه‌اى (از سوى خدا) براى او فرستاده شود"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "چنين نيست كه آنان مى‌گويند، بلكه آنها از آخرت نمى‌ترسند"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "چنين نيست كه آنها مى‌گويند، آن (قرآن) يك تذكر و يادآورى است"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "هر كس بخواهد از آن پند مى‌گيرد؛"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "و هيچ كس پند نمى‌گيرد مگر اينكه خدا بخواهد؛ او اهل تقوا و اهل آمرزش است"
        }
    ]
}