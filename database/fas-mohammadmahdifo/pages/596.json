{
    "pages": [
        {
            "chapter": 92,
            "verse": 15,
            "text": "جز نگون‌بخت‌تر[ين مردم‌] در آن درنيايد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "همان كه تكذيب كرد و رخ برتافت"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و پاك‌رفتارتر[ين مردم‌] از آن دور داشته خواهد شد"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "همان كه مال خود را مى‌دهد [براى آنكه‌] پاك شود،"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را به قصد پاداش‌يافتن نعمت نمى‌بخشد،"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "جز خواستن رضاى پروردگارش كه بسى برتر است [منظورى ندارد]"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و قطعاً بزودى خشنود خواهد شد"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "سوگند به روشنايى روز،"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "سوگند به شب چون آرام گيرد،"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "[كه‌] پروردگارت تو را وانگذاشته، و دشمن نداشته است"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "و قطعاً آخرت براى تو از دنيا نيكوتر خواهد بود"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "و بزودى پروردگارت تو را عطا خواهد داد، تا خرسند گردى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "مگر نه تو را يتيم يافت، پس پناه داد؟"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "و تو را سرگشته يافت، پس هدايت كرد؟"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "و تو را تنگدست يافت و بى‌نياز گردانيد؟"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "و اما [تو نيز به پاس نعمت ما] يتيم را ميازار،"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و گدا را مران،"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از نعمت پروردگار خويش [با مردم‌] سخن گوى"
        },
        {
            "chapter": 94,
            "verse": 1,
            "text": "آيا براى تو سينه‌ات را نگشاده‌ايم؟"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "و بار گرانت را از [دوش‌] تو برنداشتيم؟"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "[بارى‌] كه [گويى‌] پشت تو را شكست"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "و نامت را براى تو بلند گردانيديم"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "پس [بدان كه‌] با دشوارى، آسانى است"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "آرى، با دشوارى، آسانى است"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "پس چون فراغت يافتى، به طاعت دركوش؛"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "و با اشتياق، به سوى پروردگارت روى آور"
        }
    ]
}