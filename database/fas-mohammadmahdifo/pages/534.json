{
    "pages": [
        {
            "chapter": 55,
            "verse": 68,
            "text": "در آن دو، ميوه و خرما و انار است"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را منكريد؟"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "در آنجا [زنانى‌] نكوخوى و نكورويند"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را منكريد؟"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "حورانى پرده‌نشين در [دل‌] خيمه‌ها"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را منكريد؟"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "دست هيچ انس و جنى پيش از ايشان به آنها نرسيده است"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را منكريد؟"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "بر بالش سبز و فرش نيكو تكيه زده‌اند"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را منكريد؟"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "خجسته باد نام پروردگار شكوهمند و بزرگوارت،"
        },
        {
            "chapter": 56,
            "verse": 1,
            "text": "آن واقعه چون وقوع يابد،"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "[كه‌] در وقوع آن دروغى نيست"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "پست‌كننده [و] بالابرنده است"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "چون زمين با تكان [سختى‌] لرزانده شود،"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و كوهها [جمله‌] ريزه ريزه شوند،"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "و غبارى پراكنده گردند،"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما سه دسته شويد"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "ياران دست راست، كدامند ياران دست راست؟"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و ياران چپ؛ كدامند ياران چپ؟"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و سبقت‌گيرندگان مقدمند؛"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "آنانند همان مقربان [خدا]،"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در باغستانهاى پر نعمت"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "گروهى از پيشينيان،"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندكى از متأخران"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تختهايى جواهرنشان،"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "كه روبروى هم بر آنها تكيه داده‌اند"
        }
    ]
}