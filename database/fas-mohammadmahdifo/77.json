{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "سوگند به فرستادگان پى‌درپى،"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "كه سخت توفنده‌اند"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "و سوگند به افشانندگان افشانگر،"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "كه [ميان حق و باطل‌] جداگرند،"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "و القاكننده وحى‌اند"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "خواه عذرى باشد يا هشدارى"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "كه آنچه وعده يافته‌ايد قطعاً رخ خواهد داد"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "پس وقتى كه ستارگان محو شوند،"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "و آنگاه كه آسمان بشكافد،"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "و آنگاه كه كوه‌ها از جا كنده شوند،"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "و آنگاه كه پيمبران به ميقات آيند،"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "براى چه روزى تعيين وقت شده است؟"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "براى روز داورى"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "و تو چه دانى كه روز داورى چيست؟"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "مگر پيشينيان را هلاك نكرديم؟"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "سپس از پى آنان پسينيان را مى‌بريم"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "با مجرمان چنين مى‌كنيم"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "مگر شما را از آبى بى‌مقدار نيافريديم؟"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "پس آن را در جايگاهى استوار نهاديم،"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا مدّتى معيّن"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "و توانا آمديم، و چه نيك تواناييم"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "مگر زمين را محل اجتماع نگردانيديم؟"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "چه براى مردگان چه زندگان"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "و كوه‌هاى بلند در آن نهاديم و به شما آبى گوارا نوشانيديم"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "برويد به سوى همان چيزى كه آن را تكذيب مى‌كرديد"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "برويد به سوى [آن‌] دود سه شاخه،"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "نه سايه‌دار است و نه از شعله [آتش‌] حفاظت مى‌كند"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "[دوزخ‌] چون كاخى [بلند] شراره مى‌افكند،"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گويى شترانى زرد رنگند"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "اين، روزى است كه دم نمى‌زنند"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "و رخصت نمى‌يابند تا پوزش خواهند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "اين [همان‌] روز داورى است شما و [جمله‌] پيشينيان را گرد مى‌آوريم"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "پس اگر حيلتى داريد، در برابر من بسگاليد"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "اهل تقوا در زير سايه‌ها و بر كنار چشمه‌سارانند،"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "با هر ميوه‌اى كه خوش داشته باشند"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "به [پاداش‌] آنچه مى‌كرديد، بخوريد و بياشاميد؛ گواراتان باد"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "ما نيكوكاران را چنين پاداش مى‌دهيم"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "[اى كافران،] بخوريد و اندكى برخوردار شويد كه شما گناهكاريد"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "[ولى‌] آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "و چون به آنان گفته شود: «ركوع كنيد»، به ركوع نمى‌روند"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "پس به كدامين سخن پس از [قرآن‌] ايمان مى‌آورند؟"
        }
    ]
}