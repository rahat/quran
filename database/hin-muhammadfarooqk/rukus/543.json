{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "वह खड़खड़ानेवाली"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "क्या है वह खड़खड़ानेवाली"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "और तुम्हें क्या मालूम कि क्या है वह खड़खड़ानेवाली"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "जिस दिन लोग बिखरे हुए पतंगों के सदृश हो जाएँगें"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "और पहाड़ के धुन के हुए रंग-बिरंग के ऊन जैसे हो जाएँगे"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "फिर जिस किसी के वज़न भारी होंगे"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "वह मनभाते जीवन में रहेगा"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "और रहा वह व्यक्ति जिसके वज़न हलके होंगे"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "उसकी माँ होगी गहरा खड्ड"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "और तुम्हें क्या मालूम कि वह क्या है"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "आग है दहकती हुई"
        }
    ]
}