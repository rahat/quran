{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "जब सूर्य लपेट दिया जाएगा"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "सारे तारे मैले हो जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "जब पहाड़ चलाए जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "जब दस मास की गाभिन ऊँटनियाँ आज़ाद छोड़ दी जाएँगी"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "जब जंगली जानवर एकत्र किए जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "जब समुद्र भड़का दिया जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "जब लोग क़िस्म-क़िस्म कर दिए जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "और जब जीवित गाड़ी गई लड़की से पूछा जाएगा"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "कि उसकी हत्या किस गुनाह के कारण की गई"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "और जब कर्म-पत्र फैला दिए जाएँगे"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "और जब आकाश की खाल उतार दी जाएगी"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "जब जहन्नम को दहकाया जाएगा"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "और जब जन्नत निकट कर दी जाएगी"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "तो कोई भी क्यक्ति जान लेगा कि उसने क्या उपस्थित किया है"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "अतः नहीं! मैं क़सम खाता हूँ पीछे हटनेवालों की"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "चलनेवालों, छिपने-दुबकने-वालों की"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "साक्षी है रात्रि जब वह प्रस्थान करे"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "और साक्षी है प्रातः जब वह साँस ले"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "निश्चय ही वह एक आदरणीय संदेशवाहक की लाई हुई वाणी है"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "जो शक्तिवाला है, सिंहासनवाले के यहाँ जिसकी पैठ है"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "उसका आदेश माना जाता है, वहाँ वह विश्वासपात्र है"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "तुम्हारा साथी कोई दीवाना नहीं"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "उसने तो (पराकाष्ठान के) प्रत्यक्ष क्षितिज पर होकर उस (फ़रिश्ते) को देखा है"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "और वह परोक्ष के मामले में कृपण नहीं है"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "और वह (क़ुरआन) किसी धुतकारे हुए शैतान की लाई हुई वाणी नहीं है"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "फिर तुम किधर जा रहे हो"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "वह तो सारे संसार के लिए बस एक अनुस्मृति है"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "उसके लिए तो तुममे से सीधे मार्ग पर चलना चाहे"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "और तुम नहीं चाह सकते सिवाय इसके कि सारे जहान का रब अल्लाह चाहे"
        }
    ]
}