{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök, yarılıp parçalandığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve ´kendi yaratılışına uygun´ rabbine boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer, düzlendiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde olanları dışa atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve ´kendi yaratılışına uygun´ rabbine boyun eğdiği zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, gerçekten sen, hiç durmaksızın rabbine doğru bir çaba harcayıp durmaktasın; sonunda O´na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Artık kimin kitabı sağ yanından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesap (sorgu) ile sorguya çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve kendi ehline (yakınlarına) sevinç içinde dönecektir (yenkalibu)"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı ardından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O da, helak (yok olmay)ı çağıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Çılgın alevli ateşe girecek"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, (dünyada) kendi ehli (yakınları) arasında sevinçliydi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Doğrusu o, (rabbine) bir daha dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; gerçekten rabbi, kendisini çok iyi görendi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, şafak vaktine yemin ederim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve toplayıp taşıdığı şeylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ondördüne girdiği zaman aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz, gerçekten tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Şu halde onlara ne oluyor ki inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kuran okunduğunda secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine, o küfredenler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Tanrı, onların içlerinde sakladıklarını daha iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Bu durumda sen, onlara acı bir azab ile müjde ver"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak inanıp salih amellerde bulunanlar başka; onlar için kesintisi olmayan bir ecir (mükafaat) vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçları olan göğe andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "O vadedilen güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şahid olana (görene) ve şahit olunana (görülene)"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahrolsun Ashab-ı Uhdud"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "´Tutuşturucu yakıt dolu o ateş´"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani kendileri (ateş hendeğinin) çevresinde oturmuşlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve inançlılara yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan, yalnızca ´üstün ve güçlü olan´, öğülen Tanrı´ya inandıklarından dolayı intikam alıyorlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Ki O (Tanrı), göklerin ve yerin mülkü O´nundur. Tanrı, her şeyin üzerinde şahid olandır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Gerçek şu ki, inançlı (erkek)lerle inançlı (kadın)lara işkence (fitne) uygulayanlar, sonra tevbe etmeyenler; işte onlar için cehennem azabı vardır ve yakıcı azab onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Şüphesiz inanıp salih amellerde bulunanlara gelince; onlar için altından ırmaklar akan cennetler vardır. İşte büyük ´kurtuluş ve mutluluk´ budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrusu, rabbinin ´zorlu yakalayışı´ şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Çünkü O, ilkin var eden, (sonra dirilterek) döndürecek olandır"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, çok bağışlayandır çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arşın sahibidir; Mecid (pek yüce)dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Her dilediğini yapıp gerçekleştirendir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud (ordularının)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Hayır, küfredenler (kesintisiz) bir yalanlama içindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Tanrı ise, onları arkalarından sarıp kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır; o (Kitap), ´şerefli üstün´ olan bir Kurandır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve Tarık´a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık´ın ne olduğunu sana bildiren nedir"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(Karanlığı) Delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Üzerinde gözetleyici koruyucu bulunmayan hiçbir nefs (kimse) yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan bir baksın, hangi şeyden yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Dökülüp atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(Bu su,) Bel kemiği ile kaburgalar arasında(ki organlar)dan çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Şüphesiz (Tanrı), onu yeniden döndürmeye güç yetirendir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların orta yere çıkarılacağı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun ne gücü vardır, ne yardımcısı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Dönüşlü olan göğe andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Yarılan yere de"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Şüphesiz o (Kuran), ayırdeden bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Doğrusu onlar, hileli bir düzen planlayıp kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir düzen kurup hazırlıyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen kafirlere bir mühlet ver, az bir süre tanı"
        }
    ]
}