{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Fakat o, ne doğrulamış ne de namaz kılmıştı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Ancak o, yalanlamış ve yüz çevirmişti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra çalım satarak ehline (yakınlarına) gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Sen buna müstahaksın, dahasına müstahaksın"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine müstahaksın, dahasına da müstahaksın"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan, ´kendi başına ve sorumsuz´ bırakılacağını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Kendisi akıtılan meniden bir damla su değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra bir alak oldu, derken (Tanrı, onu) yarattı ve bir ´düzen içinde biçim verdi´"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Böylece ondan, erkek ve dişi olmak üzere çift kıldı"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "(Öyleyse Tanrı) Ölüleri diriltmeye güç yetiren değil midir"
        }
    ]
}