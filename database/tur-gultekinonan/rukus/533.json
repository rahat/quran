{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Güneşe ve onun parıltısına andolsun"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izlediği zaman aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu (güneş) parıldattığı zaman gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu sarıp örttüğü zaman geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayıp döşeyene"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve ona ´bir düzen içinde biçim verene´"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra ona fücurunu ve takvasını ilham edene (andolsun)"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu arındırıp temizleyen gerçekten felah bulmuştur"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve onu (isyanla, günahla, bozulmalarla) örtüp saran da elbette yıkıma uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud (halkı) azgınlığı dolayısıyla yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En ´zorlu bedbahtları´ ayaklandığında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Tanrı´nın elçisi onlara dedi ki: \"Tanrı´nın (deneme için size gönderdiği) devesine ve onun su içme sırasına dikkat edin"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat, onu yalanladılar, deveyi yere yıkıp öldürdüler. Rableri de günahları dolayısıyla ´onları yerle bir etti, kırıp geçirdi´; orasını da dümdüz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "(Tanrı, asla) Bunun sonucundan korkmaz"
        }
    ]
}