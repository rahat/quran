{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Birbiri ardınca gönderilenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Derken kökünden koparıp savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Yaydıkça yayanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Böylece ayırdıkça ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Zikr (vahy, öğüt) bırakanlara"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Özür (suçu, eksikliği ortadan kaldırmak) veya uyarmak için"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Şüphesiz, size vaadedilen gerçekleşecektir"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar ´örtülüp (ışıkları) silindiği´ zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Dağlar, kökünden sökülüp savurulduğu zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Ve resuller de (şahitlik için) belli bir vakitte getirildiği zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "(Bu,) Hangi gün için ertelenmişti (üccilet)"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "(Mümini müşrikten, haklıyı haksızdan) Ayırma günü için"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Bu ayırma gününü sana ne bildirdi"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Biz, öncekileri helak etmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonra, arkadan gelenleri onların izinde yürüteceğiz"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "İşte biz, suçlu günahkarlara böyle yapıyoruz"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basbayağı bir sudan yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonra onu savunması sağlam bir karar yerine yerleştirdik"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "İşte (buna) güç yetirdik. Biz ne güzel güç yetirenleriz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz yeryüzünü bir toplanma yeri kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Dirilere ve ölülere"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Ve onda sabit yüksek dağlar var etmedik mi? Size tatlı bir su içirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Kendisini yalanladığınız (azab)a gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Üç dala ayrılmış bir gölgeye gidin"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Ne gölge altında barındırır, ne (yakıcı) alevden korur"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Gerçekten o sanki her biri saray olan bir kıvılcım saçar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Her biri, sanki sapsarı erkek deve sürüleri gibidir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu, onların konuşamayacakları bir gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ve onlara özür beyan etmeleri için izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bu, hüküm günüdür; sizi ve öncekileri ´bir arada topladık´"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Şayet kurabileceğiniz hileli bir düzeniniz varsa, durmaksızın bana karşı kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gün, yalanlayanların vay haline"
        }
    ]
}