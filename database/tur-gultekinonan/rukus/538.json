{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan rabbin adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O insanı bir alaktan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, rabbin en büyük kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Ki O, kalemle (yazmayı) öğretendir"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini öğretti"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır gerçekten insan, azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini müstağni gördüğünden"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Şüphesiz, dönüş yalnızca rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Engellemekte olanı gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kıldığı zaman bir kulu"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gördün mü? Ya o (kul) doğru yol üzerinde ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Ya da takvayı buyurduysa"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü? Ya (bu engellemek isteyen) yalanlıyor ve yüz çeviriyor ise"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "O, Tanrı´nın gördüğünü bilmiyor mu"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır; eğer o, (bu tutumuna) bir son vermeyecek olursa, andolsun, onu perçeminden tutup sürükleyeceğiz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "O yalancı, günahkar olan alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O zaman da meclisini (yakın çevresini ve yandaşlarını) çağırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağıracağız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır; ona boyun eğme (rabbine) secde et ve yakınlaş"
        }
    ]
}