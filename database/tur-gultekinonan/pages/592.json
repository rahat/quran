{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Hayır siz, dünya hayatını seçip üstün tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret ise daha hayırlı ve daha süreklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphesiz bu, önceki sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Kıyametin haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün, öyle yüzler vardır ki ´zillet içinde aşağılanmıştır´"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışmış, boşuna yorulmuştur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir ateşe yollanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kaynar bir kaynaktan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için (zehirli olan) darı dikeninden başka bir yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne doyurup semirtir, ne açlıktan korur"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün, öyle yüzler de vardır ki, nimettedirler"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Harcadığı çabadan dolayı hoşnuttur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada anlamsız bir söz işitmez"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada ´durmaksızın akan´ bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada ´yükseklerde kurulmuş´ tahtlar da vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş (içecek dolu) kaplar"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizi dizi yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Ve serilmiş yaygılar"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı o deveye; nasıl yaratıldı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe, nasıl yükseltildi"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara; nasıl oturtulup kuruldu"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere; nasıl yayılıp döşendi"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Artık sen, öğüt verip hatırlat. Sen, yalnızca bir öğüt verici, bir hatırlatıcısın"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onlara ´zor ve baskı´ kullanacak değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve küfrederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Tanrı, onu en büyük azab ile azablandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphesiz onların dönüşleri (iyabehüm) bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları hesaba çekmek de elbette bize aittir"
        }
    ]
}