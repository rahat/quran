{
    "chapter": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Surat astı ve yüz çevirdi"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine o kör geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nerden biliyorsun; belki o temizlenip arınacak"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Veya öğüt alacak; böylelikle bu öğüt kendisine yarar sağlayacak"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Fakat kendini müstağni gören ise"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "İşte sen, onda ´yankı uyandırmaya´ çalışıyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa, onun temizlenip arınmasından sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama koşarak sana gelen ise"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ki o, ´içi titreyerek korkar´ bir durumdadır"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen ona aldırış etmeden oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır; çünkü o (Kuran), bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen, onu ´düşünüp öğüt alsın´"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O (Kuran), ´şerefli/üstün´ sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüceltilmiş, tertemiz (mutahhar) kılınmış"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Katiplerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "(Ki onlar,) Üstün değerli, ´iyilik ve dürüstlük sembolü´"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan, ne kadar küfretmektedir"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(Tanrı) Onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir damla sudan yarattı da onu ´bir ölçüyle biçime soktu´"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürdü, böylece kabre gömdürdü"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır; ona (Tanrı´nın) buyurduğunu yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Bir de insan, yediğine bir bakıversin"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Biz şüphesiz, suyu akıttıkça akıttık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra yeri yardıkça yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Şöylece onda taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler, yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler, hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Boyları birbiriyle yarışan ve içiçe girmiş ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklıklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Size ve hayvanlarınıza bir yarar (meta) olmak üzere"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Fakat ´kulakları patlatırcasına olan o gürleme´ geldiği zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Kişi o gün, kendi kardeşinden kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve çocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün, onlardan her birisinin kendine yetecek bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün, öyle yüzler vardır ki apaydınlıktır"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güler ve sevinç içindedir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Ve o gün, öyle yüzler de vardır ki üzerini toz bürümüştür"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Bir karartı sarıp kaplamıştır"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar da, kafir ve facir (keferetülfecereh) olanlardır"
        }
    ]
}