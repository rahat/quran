{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "ده تندى تریو كړ او مخ يې وګرځاوه"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "په دې وجه چې ده ته ړوند راغى"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "او ته څه شي پوه كړى يې، ښايي چې دى پاك شي"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا به دى نصیحت (او پند) واخلي، نو ده ته به پند نفع ورسوي"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "هر چې هغه څوك دى چې استغنا يې كړې ده"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "نو ته په هغه پسې كېږې"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "حال دا چې په تا هېڅ الزام نشته چې هغه پاك نشي"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "او هر چې هغه څوك دى چې تا ته په منډو راځي"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "په داسې حال كې چې دى (له الله نه) وېرېږي"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "نو ته له هغه نه مشغولېږې"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "داسې كله هم مه كوه، بېشكه دا (سورت) یو پند (او نصیحت) دى"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "نو هغه څوك چې غواړي (نو) دى دې ومني"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(دغه) په عزتمنو پاڼو كې دى"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "چې پورته كړى شوې، ښې پاكې كړى شوې دي"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "د لیكونكو (ملايكو) په لاسونو كې"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "چې ډېر عزتمن، ډېر نېك دي"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "انسان دې هلاك كړى شي، دى څومره ډېر ناشكره دى"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "دى دغه (الله) له څه شي نه پیدا كړى دى؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "له نطفې نه، دى يې پیدا كړى دى، پس دى يې اندازه كړى دى"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "بیا يې ده ته لاره ور اسانه كړې ده"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "بیا يې دى مړ كړ، نو دى يې په قبر كې كېښود"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "بیا چې كله وغواړي دى به ژوندى كړي"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "داسې نه ده، دغه (انسان) هغه كار نه دى كړى چې دغه (الله) ده ته حكم كړى دى"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "نو انسان دې خپل طعام ته وګوري"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "چې بېشكه مونږ اوبه راتوى كړې دي، راتویول"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "بیا مونږ ځمكه څیرې كړې ده، څیرول"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "نو مونږ په دې كې دانې را زرغونه كړي دي"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "او انګور او تركاريانې"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "او زیتون او كجورې"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "او ګڼ باغونه"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "او مېوې او ګياه (واښه)"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "ستاسو او ستاسو د څارویو د فايدې لپاره"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "نو كله چې سخت اواز راشي"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "په هغه ورځ چې سړى به له خپل وروره تښتي"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "او له خپلې مور او خپل پلاره"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "او له خپلې ښځې او خپلو زامنو نه"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "په دوى كې د هر سړي لپاره به په دغه ورځ كې یو حال وي چې دى به (له نورو نه) بې پروا (بې غوره) كوي"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "څه مخونه به په دغې ورځ كې روښانه وي"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندېدونكي (او) خوشاله به وي"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "او څه مخونه به په دغې ورځ كې پر هغو به ګرد پروت وي"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "دغه (مخونه) به توروالي پټ كړي وي"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "دغه (تور مخي) خلق هم دوى كافران (او) فاجران (بدكاران) دي"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "كله چې لمر ونغښتل شي"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "او كله چې ستوري خړ شي"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "او كله چې غرونه روان كړل شي"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "او كله چې د لسو میاشتو بلاربې اوښې معطلې (ازادې) پرېښودى شي"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "او كله چې وحشي ځناوران راجمع كړل شي"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "او كله چې دریابونه بل كړى شي"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "او كله چې نفسونه جوړه كړل شي"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "او كله چې ژوندۍ خښه كړى شوې جینۍ وپوښتى شي"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "چې دا په كومې ګناه وژل شوې ده"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "او كله چې اعمال نامې وغوړولى شي"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "او كله چې له اسمان نه پوستكى ووېستل شي"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "او كله چې دوزخ بلې لمبې كړى شي"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "او كله چې جنت ښه نژدې كړى شي"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "هر نفس به په هغه شي پوه شي چې ده حاضر كړى وي"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "نو زه قسم خورم په هغو (ستوریو) چې بېرته ګرځېدونكي دي"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "په روانو، پټېدونكو باندې"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "او قسم خورم په شپې كله چې شروع شي"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "او په سبا كله چې دى ساه واخلي (روښانه شي)"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "بېشكه دا (قرآن) خامخا د ډېر عزتمن رسول قول دى"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "چې د عرش د مالك په نیز د قوت والا (او) د مرتبې والا دى"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "منلى شوى دى هلته، امین دى"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "او ستاسو ملګرى (محمدﷺ) له سره لېونى نه دى"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "او یقینًا یقینًا ده دغه (جبریل د اسمان) په څرګنده غاړه كې لیدلى و"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "او دى د وحي په بیانولو كې له سره بخل كوونكى نه دى"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "او بېخي نه دى دا (قرآن) خبره د شیطان رټل شوي"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "نو تاسو (اى كافرانو!)چېرته ځئ؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "نه دى دا (قرآن) مګر د عالمونو لپاره نصیحت (او پند)"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "د هغه چا لپاره چې په تاسو كې غواړې چې دى نېغ برابر شي"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "او تاسو د (د سمې لارې) اراده نشئ كولى مګر دا چې الله رب العلمین يې اراده وكړي"
        }
    ]
}