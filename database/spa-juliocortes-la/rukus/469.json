{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Cuando suceda el Acontecimiento"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "nadie podra negarlo"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "¡Abatira, exaltara"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Cuando la tierra sufra una violenta sacudida"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "y las montanas sean totalmente desmenuzadas"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "convirtiendose en fino polvo disperso"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "y seais divididos en tres grupos"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Los de la derecha -¿que son los de la derecha"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "los de la izquierda -¿que son los de la izquierda"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "y los mas distinguidos, que son los mas distinguidos"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Estos son los allegados"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "en los jardines de la Delicia"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Habra muchos de los primeros"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "y pocos de los ultimos"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "En lechos entretejidos de oro y piedras preciosas"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "reclinados en ellos, unos enfrente de otros"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Circularan entre ellos jovenes criados de eterna juventud"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "con calices. jarros y una copa de agua viva"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "que no les dara dolor de cabeza ni embriagara"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "con fruta que ellos escogeran"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "con la carne de ave que les apetezca"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Habra huries de grandes ojos"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "semejantes a perlas ocultas"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "como retribucion a sus obras"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "No oiran alli vaniloquio ni incitacion al pecado"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "sino una palabra: «¡Paz! ¡Paz!»"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Los de la derecha -¿que son los de la derecha"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "estaran entre azufaifos sin espinas"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "y linos de acacias"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "en una extensa sombra"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "cerca de agua corriente"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "y abundante fruta"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "inagotable y permitida"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "en lechos elevados"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Nosotros las hemos formado de manera especial"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "y hecho virgenes"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "afectuosas, de una misma edad"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "para los de la derecha"
        }
    ]
}