{
    "chapter": [
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yerküre kendine has sarsıntısıyla sallandığı"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Toprak ağırlıklarını dışarı çıkardığı"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan \"Ne oluyor buna!\" dediği vakit"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün (yer) haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Rabbinin ona bildirmesiyle"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar amellerini görmeleri (karşılığını almaları) için darmadağınık geri dönüp gelirler"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Kim zerre miktarı hayır yapmışsa onu görür"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre miktarı şer işlemişse onu görür"
        }
    ]
}