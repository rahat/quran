{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş katlanıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar (kararıp) döküldüğünde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar (sallanıp) yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiğinde"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar toplanıp bir araya getirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığında"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar (bedenlerle) birleştirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri toprağa gömülen kıza, sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günah sebebiyle öldürüldü? diye"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amellerin yazılı olduğu) defterler açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gökyüzü sıyrılıp alındığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem tutuşturulduğunda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kişi neler getirdiğini öğrenmiş olacaktır"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Şimdi yemin ederim o sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yuvasına gidenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya yüz tuttuğunda geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ağarmaya başladığında sabaha andolsun ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "O (Kur'an), şüphesiz değerli, bir elçinin (Cebrail'in) getirdiği sözdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi güçlü, Arş'ın sahibi (Allah'ın) katında çok itibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O orada sayılan, güvenilen (bir elçi) dir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız (Muhammed) de mecnun değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki, onu (Cebrail'i) apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gaybın bilgilerini (sizden) esirgemez"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O lanetlenmiş şeytanın sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal böyle iken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, herkes için, bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru yolda gitmek isteyenler için de"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}