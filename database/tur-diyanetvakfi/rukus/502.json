{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Bir soran inecek azabı sordu"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "İnkarcılar için; ki onu savacak yoktur"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Yükselme derecelerinin sahibi olan Allah katından"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve Ruh (Cebrail), oraya, miktarı (dünya senesi ile) ellibin yıl olan bir günde yükselip çıkar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "(Resulüm!) Şimdi sen güzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Doğrusu onlar, o azabı (ihtimalden) uzak görüyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın görmekteyiz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gün gökyüzü, erimiş maden gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Dağlar da atılmış yüne döner"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost, dostu sormaz"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "Birbirlerine gösterilirler (fakat herkes kendi derdindedir). Günahkar kimse ister ki, o günün azabından (kurtuluş için), oğullarını"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "Karısını ve kardeşini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "Kendisini koruyup barındıran tüm ailesini"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "Ve yeryüzünde kim varsa hepsini fidye olarak versin de, tek kendini kurtarsın"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Fakat ne mümkün! Bilinmeli ki, o (cehennem) alevlenen bir ateştir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Derileri kavurup soyar"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Yüz çevirip geri döneni, (kendine) çağırır"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "(Servet) toplayıp yığan kimseyi"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Gerçekten insan, pek hırslı (ve sabırsız) yaratılmıştır"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine fenalık dokunduğunda sızlanır, feryat eder"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Ona imkan verildiğinde ise pinti kesilir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak şunlar öyle değildir: Namaz kılanlar"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "Ki, onlar namazlarında devamlıdırlar (ihmal göstermezler)"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "Mallarında, belli bir hak vardır"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "Saile ve mahruma(vermek için)"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "Ceza (ve hesap) gününün doğruluğuna inananlar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rab'lerinin azabından korkanlar"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "Ki Rab'lerinin azabı(na karşı) emin olunamaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "Irzlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "Ancak eşlerine ve cariyelerine karşı müstesna; çünkü onlar kınanmaz"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Bundan öteye (geçmek) isteyenler ise, onlar taşkınların ta kendileridir"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Emanetlerine ve ahitlerine riayet edenler"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Şahitliklerini (dosdoğru) yapanlar"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "İşte bunlar, cennetlerde ağırlanırlar"
        }
    ]
}