{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz senin göğsünü açıp genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yükünü senden alıp atmadık mı"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "O senin belini büken yükü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin şanını ve ününü yüceltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Elbette zorluğun yanında bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gerçekten, zorlukla beraber bir kolaylık daha vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Boş kaldın mı hemen (başka) işe koyul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Yalnız Rabbine yönel"
        }
    ]
}