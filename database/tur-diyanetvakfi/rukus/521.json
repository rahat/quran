{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha güç, yoksa gökyüzünü yaratmak mı, ki onu Allah bina etti"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Onu yükseltti, düzene koydu"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini kararttı, gündüzünü ağarttı"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Ondan sonra da yerküreyi döşedi"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Yerden suyunu ve otlağını çıkardı"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dağları sağlam bir şekilde yerleştirdi"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Kendiniz ve hayvanlarınız için bir faydalanma olmak üzere"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Her şeyi alt üst eden o büyük felaket geldiği vakit"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "İnsanın yapıp ettiklerini hatırlayacağı gün"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Ve görene cehennem açık bir şekilde gösterilmiştir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim azmışsa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve dünya hayatını ahirete tercih etmişse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Şüphesiz cehennem(onun için) tek barınaktır"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Rabbinin makamından korkan ve nefsini kötü arzulardan uzaklaştırmış kimse için"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Şüphesiz cennet(onun) yegane barınağıdır"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyameti sorarlar: Gelip çatması ne zamandır? (derler)"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sen onu nereden bilip bildireceksin"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Onun nihai ilmi yalnız Rabbine aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen ancak ondan korkanları uyarırsın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Kıyamet gününü gördüklerinde (dünyada) sadece bir akşam vakti ya da kuşluk zamanı kadar kaldıklarını sanırlar"
        }
    ]
}