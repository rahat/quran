{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gökyüzü yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar döküldüğü zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler birbirine katıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içindekiler dışarı çıkarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "İnsanoğlu (yapıp) gönderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! İhsanı bol Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O Allah ki seni yarattı, seni düzgün ve dengeli kılıp, ölçülü bir biçim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni istediği her hangi bir şekilde parçalardan oluşturdu"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Siz yine de dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Şunu iyi bilin ki üzerinizde bekçiler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Değerli yazıcılar var"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar, yapmakta olduklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler muhakkak cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gününde oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar (kafirler) oradan bir daha da ayrılmazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza günü nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, bilir misin? Nedir acaba o ceza günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün hiçbir kimse başkası için bir şey yapamaz. O gün iş Allah'a kalmıştır"
        }
    ]
}