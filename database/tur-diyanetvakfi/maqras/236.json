{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbine kulak verip boyun eğecek hale getirildiği zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz edildiği"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde bulunanları atıp boşaldığı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabb'ini dinleyip O'na hakkıyla itaata mecbur kılındığı vakit (insanoğlu yaptıkları ile karşılaşır)"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Şüphe yok ki sen Rabbine karşı çaba üstüne çaba göstermektesin; sonunda O'na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolay bir hesapla hesaba çekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevinçli olarak ailesine dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Derhal yok olmayı isteyecek"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli ateşe girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Zira o, (dünyada) ailesi içinde (mal-mülk sebebiyle) şımarmıştı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O hiçbir zaman Rabbine dönmeyeceğini sandı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Oysa gerçekten Rabbi onu görüyordu"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Hayır! Şafağa, yemin ederim ki"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve onda basan karanlığa"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay olmuş aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz elbette halden hale geçeceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Böyleyken onlar acaba neden iman etmezler"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Onlar kendilerine Kur'an okununca secde de etmezler"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine, kafirler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah onların gizlediği şeyleri çok iyi bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "(Resulüm!) Onlara acı azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "İman edip salih amel işleyenler başkadır; onlar için arkası kesilmeyen bir mükafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlara sahip gökyüzüne"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Geleceği bildirilmiş olan güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(O günde) tanıklık edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendeğin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O çıralı ateşin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar (yakanlar) da başlarına oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yapmakta oldukları işkenceyi seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan, sırf, aziz ve hamid olan Allah'a iman ettikleri için intikam aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, göklerin ve yerin mülkü kendisine aittir, ve Allah her şeye şahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Şüphesiz inanmış erkeklerle inanmış kadınlara işkence edip sonra tevbe de etmeyenlere cehennem azabı ve (orada) yanma cezası vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İman edip salih ameller işleyenlere ise, zemininden ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Şüphesiz Rabbinin yakalaması çok şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Bilin ki O, (kainat yokken) ilk olarak yaratan, (ölümden sonra tekrar hayatı) geri getirendir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, çok bağışlayan ve çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Şerefli Arş'ın sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediği şeyleri mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların, haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud'un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu inkarcılar (gerçeği) yalanlayıp dururlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır o şerefli bir Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz'dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Gökyüzüne ve tarıka (sabah yıldızına) yemin ederim"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarıkın ne olduğunu nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(O, karanlığı) delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiç kimse yoktur ki üzerinde bir koruyucu, bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(O su) sırt ile göğüs kafesi arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "İşte Allah (başlangıçta bu şekilde yarattığı) insanı tekrar yaratmaya da kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlenenlerin ortaya döküldüğü gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "O gün insan için ne bir güç ne de bir yardımcı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Dönüş sahibi olan (yağmur yağdıran) göğe, yemin ederim ki"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(Nebat ile) yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Şüphesiz Kur'an, (hak ile batılı) ayıran bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, asla bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kurarlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Onun için Kafirlere mühlet ver, onları biraz kendi hallerine bırak (pek yakında desteğimiz sana gelecek)"
        }
    ]
}