{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Ki onun oluşunu yalanlayacak hiçbir kimse yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsıldığı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar parçalandığı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dağılıp toz duman haline geldiği"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağdakiler, ne mutlu o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdırlar onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, (ecirde de) öndedirler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte bunlar, (Allah'a) en yakın olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Naim cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(Onların) çoğu önceki ümmetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Cevherlerle işlenmiş tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların üzerlerinde karşılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Çevrelerinde, (hizmet için) ölümsüz gençler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Main çeşmesinden doldurulmuş testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu şaraptan ne başları ağrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "(Onlara) beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "İri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen, yalnızca \"selam, selam\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, ne mutlu o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Düzgün kiraz ağacı"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyveleri salkım salkım dizili muz ağaçları"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Sayısız meyveler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve kabartılmış döşekler üstündedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Gerçekten biz hurileri apayrı biçimde yeni yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları, bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bütün bunlar sağdakiler içindir"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların birçoğu önceki ümmetlerdendir"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Birçoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler; ne yazık o soldakilere"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kapkara dumandan bir gölge altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Serin ve hoş olmayan"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar bundan önce varlık içinde sefahete dalmışlardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günahı işlemekte direnir dururlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Ve diyorlardı ki: Biz öldükten, toprak ve kemik yığını haline geldikten sonra, biz mi bir daha diriltileceğiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: Hem öncekiler hem de sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün belli vaktinde mutlaka toplanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz ey sapıklar, yalancılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı ondan dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne de kaynar sudan içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin suya saldırışı gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza gününde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık. Tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Söyleyin öyleyse, (rahimlere) döktüğünüz meni nedir"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz. Ve biz, önüne geçilebileceklerden değiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediğiniz bir alemde tekrar var edelim diye (ölümü takdir ettik)"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun, ilk yaratılışı bildiniz. Düşünüp ibret almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Şimdi bana, ektiğinizi haber verin"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu kuru bir çöp yapardık da şaşar kalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Doğrusu borç altına girdik"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha doğrusu, biz yoksul kaldık\" (derdiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ya içtiğiniz suya ne dersiniz"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Şükretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Söyleyin şimdi bana, tutuşturmakta olduğunuz ateşi"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız, yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu bir ibret ve çölden gelip geçenlerin istifadesi için yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Öyleyse ulu Rabbinin adını tesbih et"
        }
    ]
}