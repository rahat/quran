{
    "pages": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlara sahip gökyüzüne"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Geleceği bildirilmiş olan güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(O günde) tanıklık edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Kahroldu o hendeğin sahipleri"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O çıralı ateşin"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar (yakanlar) da başlarına oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Müminlere yapmakta oldukları işkenceyi seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlardan, sırf, aziz ve hamid olan Allah'a iman ettikleri için intikam aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki, göklerin ve yerin mülkü kendisine aittir, ve Allah her şeye şahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Şüphesiz inanmış erkeklerle inanmış kadınlara işkence edip sonra tevbe de etmeyenlere cehennem azabı ve (orada) yanma cezası vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İman edip salih ameller işleyenlere ise, zemininden ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Şüphesiz Rabbinin yakalaması çok şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Bilin ki O, (kainat yokken) ilk olarak yaratan, (ölümden sonra tekrar hayatı) geri getirendir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, çok bağışlayan ve çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Şerefli Arş'ın sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediği şeyleri mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların, haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Yani Firavun ve Semud'un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu inkarcılar (gerçeği) yalanlayıp dururlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır o şerefli bir Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz'dadır"
        }
    ]
}