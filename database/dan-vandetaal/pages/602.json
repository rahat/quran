{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Ter bescherming van de Qoraishieten"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Ter bescherming op hun zomer- en winterreis"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Laten zij derhalve de Heer van dit Huis aanbidden"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Die hen van voedsel tegen honger heeft voorzien en van vrees bevrijd"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Hebt gij hem gezien die deze godsdienst loochent"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Het is degene die de wees verstoot"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Hij wekt anderen niet op de armen te voeden"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "En wee degenen die bidden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "En de gebeden achteloos opzeggen"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "En zij, die er mee te koop lopen"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En zich er van weerhouden de behoeftige vriendelijkheid te betonen"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Voorwaar, Wij hebben u in overvloed het goede gegeven"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Bid daarom tot uw Heer en offer"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Voorzeker, uw vijand zal uitsterven"
        }
    ]
}