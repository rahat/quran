{
    "pages": [
        {
            "chapter": 103,
            "verse": 1,
            "text": "Bij de tijd"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Voorzeker, de mens is te midden van verlies"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Behalve degenen die geloven en goede werken doen, en elkander tot waarheid, en geduld aansporen"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Wee iedere leugenaar en lasteraar"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Die rijkdommen verzamelt en deze telt"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Denkende dat zijn schatten hem voor eeuwig zullen behouden"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Neen, hij zal zeker in het Verterende Vuur worden geworpen"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "En wat weet gij er van wat het verterende Vuur betekent"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Het is het Vuur dat Allah heeft aan gewakkerd"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Dat boven de harten zal opstijgen"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Voorwaar het zal hen omsluiten"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "In uitgestrekte rijen van zuilen"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Hebt gij niet vernomen, hoe uw Heer de bezitters der olifanten behandelde"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Heeft Hij hun plannen niet teniet gedaan"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Zond Hij geen zwermen vogels op hen neer"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "En wierpen deze geen klompen klei"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Dat hen maakte als fijn gekauwd (door het vee) stro"
        }
    ]
}