{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Hij (de profeet) fronste (zijn voorhoofd) en wendde zich af"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Omdat er een blinde man tot hem kwam"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "(Mens) wat weet gij? Misschien wilde hij zich laten louteren"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Of hij kon om raad komen, en die raad zou hem van nut kunnen zijn"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Maar aan hem, die onverschillig is"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Schenkt gij uw aandacht"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Hoewel gij er niet voor aansprakelijk zijt als hij zich niet loutert"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Maar hij die zich tot u haast"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "En Allah vreest"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Voor hem zijt gij onverschillig"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Neen! Voorwaar, het is een vermaning"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dus, wie het wil, laat hem er lering uit trekken"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(Dit is) in verheven geschriften"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Hoogstaand en rein"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "In de handen van schrijvers"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Edel, deugdzaam"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Wee de mens! Hoe ondankbaar is hij"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Waaruit heeft Hij hem geschapen"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Uit een kleine levenskiem schept Hij hem en stelt zijn verhoudingen vast"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Dan effent Hij de weg voor hem"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Dan doet Hij hem sterven en geeft hem aan het graf over"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Dan, wanneer Hij wil, zal Hij hem weer opwekken"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Neen, hij heeft hetgeen Hij hem gebood, niet volbracht"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Laat nu de mens naar zijn voedsel zien"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Hoe Wij water doen neerstromen"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Dan de aarde splijten"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "En graan daaruit doen groeien"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Ook druiven en groenten"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "En de olijfboom en de dadelpalm"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "En tuinen, dicht beplant"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "En vruchten en weiden"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Voorziening voor u en uw vee"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Maar als de oorverdovende roep komt"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "De Dag waarop een man van zijn broeder vlucht"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "En van zijn moeder en zijn vader"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "En van zijn vrouw en zijn kinderen"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "Op die Dag zal een ieder een aangeiegenheid hebben die hem bezig zal houden"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Op die Dag zullen sommige gezichten stralend zijn"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Lachend, vrolijk"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "En op andere gezichten zal op die Dag stof liggen"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Duisternis zal hen bedekken"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Dat zijn de ongelovigen, de slechten"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Wanneer de zon wordt omhuld"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "En wanneer de sterren dof worden"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "En wanneer de bergen verdwijnen"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "En wanneer de drachtige kamelen worden verlaten"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "En wanneer de dieren worden bijeengegaard"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "En wanneer de zeëen worden geledigd"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "En wanneer de mensen worden verenigd"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "En wanneer er over het gedode kind (verantwoording) zal worden gevraagd"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Voor welke misdaad het gedood werd"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "En wanneer geschriften worden verspreid"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "En wanneer de Hemel wordt opengelegd"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "En wanneer de hel wordt ontstoken"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "En wanneer het paradijs nabij wordt gebracht"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Dan zal ieder ziel weten wat zij heeft voorbereid"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "En Ik roep tot getuige datgene wat terugkeert"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Zijn loop volgt en ondergaat"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "En de nacht wanneer deze heengaat"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "En de dageraad als deze aanbreekt"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Dat is voorzeker de boodschap van een edele boodschapper"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Vol van macht, bevestigd door de Heer van de Troon"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Die gehoorzaamd moet worden en vertrouwenswaardig is"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "En uw metgezel is niet krankzinnig"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "En hij zag hem (Gabriël) aan de heldere horizon"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "En hij is geen vrek wat het onzienlijke aangaat"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "En dit is niet het woord van Satan de vervloekte"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Waarheen richt gij u dan"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Dit is niets dan een vermaning voor de werelden"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Voor hem onder u die oprecht wil wandelen"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "En gij zult niets willen behalve wat Allah wil, de Heer der Werelden"
        }
    ]
}