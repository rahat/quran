{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "De ramp"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Wat is de ramp"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "En wat weet gij (er van) wat de ramp is"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Een Dag waarop de mensen als motten verstrooid zullen zijn"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "En de bergen als gekaarde wol"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Dan zal hij, wiens schalen zwaar zijn"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Een aangenaam leven genieten"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Doch hij, wiens schalen licht zijn"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Zijn toevlucht zal Hawi'jah zijn"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "En gij weet niet, wat dit is"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Het is een laaiend Vuur"
        }
    ]
}