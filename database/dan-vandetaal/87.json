{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Verheerlijk de Naam van uw Heer, de Allerhoogste"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Die schept en vervolmaakt"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "En Die bepaalt en leidt"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "En Die het gewas voortbrengt"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "En het dan doet verdorren"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Wij zullen u weldra onderwijzen zodat gij het niet vergeet"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Behalve wat Allah wil - Voorwaar, Hij kent het openlijke en het verborgene"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "En Wij zullen uw weg effenen tot gemak"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Maak (anderen) daarom indachtig, voorzeker dit is nuttig"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Hij die vreest zal er lering uit trekken"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Maar de rampzalige zal zich ervan afwenden"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Die het grote Vuur zal binnengaan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Waarin hij noch sterven noch leven zal"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Voorzeker, geslaagd is hij die zich loutert"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "En die de naam van zijn Heer gedenkt en bidt"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Maar gij verkiest het leven dezer wereld"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ofschoon het Hiernamaals beter en van langere duur is"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Voorzeker, dit is in vroegere geschriften vermeld"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "De geschriften van Abraham en Mozes"
        }
    ]
}