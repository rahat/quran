{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Verkondig de naam van uw Heer, de Schepper"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Die de mens uit geronnen bloed schiep"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Verkondig, want uw Heer is de meest Eerbiedwaardige"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Die (de mens) door middel van de pen onderwees"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Hij leerde aan de mens datgene wat deze niet kende"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "In het geheel niet. Voorwaar, de mens wordt opstandig"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Omdat hij zich onafhankelijk denkt"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Voorwaar uw terugkeer is tot uw Heer"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Hebt gij degelle gezien die verbiedt"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Wanneer onze dienaar bidt"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Zeg mij, als hij de leiding volgt"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Of tot rechtvaardigheid maant"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Zeg mij, indien hij (de Waarheid) verloochent en zich afwendt"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Weet hij niet dat Allah alles ziet"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Neen, wanneer hij niet ophoudt, zullen Wij hem zeker bij de haren van zijn voorhoofd grijpen"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Van dat leugenachtige en schuldige voorhoofd"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Laat hij dan zijn raadgevers bij elkaar roepen"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Wij zullen ook Onze wachters bijeen brengen"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Neen, gehoorzaam hem niet, maar werp u neder en zoek Zijn nabijheid"
        }
    ]
}