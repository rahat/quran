{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "Yǐ bēnchí ér chuǎnxī de zhànmǎ,"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "tí fā huǒhuā,"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "límíng shí túxí,"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "juǎn qǐ màntiān huīchén,"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "xùnsù gōng rù dízhèn de zhànmǎ fāshì,"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "rén [bù xìnyǎng zhě] duì zìjǐ de zhǔ zǒng shì wàng'ēnfùyì de."
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Tā [de xíngwéi] què shì jiànzhèng cǐ shì [wàng'ēnfùyì] de."
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Tā díquè fēicháng tān ài cáifù."
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Nándào tā bù zhīdào ma? Dāng fénmù zhōng de yīqiè bèi jiēlù [sǐrén bèi fùhuó],"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "[rén] xiōngzhōng de yīqiè bèi xiǎnlù shí,"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "zài nà rì [fùhuó rì], tāmen de zhǔ què shì chè zhī tāmen de [gōngguò de]."
        }
    ]
}