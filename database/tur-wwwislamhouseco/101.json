{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Şiddetle gelip çatan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o yürekleri hoplatan büyük felaket"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Yürekleri hoplatan büyük felaketin ne olduğunu sen ne bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün insanlar, her biri bir tarafa uçuşan pervaneler gibi olacaktır"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar da atılmış renkli yünler gibi olacaktır"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "İşte o vakit, kimin tartıları ağır gelmişse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Artık o, hoşnut olacağı bir hayatın içinde olacaktır"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Ama kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "İşte onun varacağı yer Hâviye’dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Sen Hâviye’nin ne olduğunu ne bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O, kızgın bir ateştir"
        }
    ]
}