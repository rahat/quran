{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yüce Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O; yaratıp şekillendiren, düzene koyandır"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O, (her şeyi) ölçüyle yapıp, yol gösterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Otlağı çıkarandır"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kuru siyah bir ota çevirmiştir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur’an’ı) okutacağız ve sen onu unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Ancak Allah’ın dilediği hariç. Şüphesiz O; açık olanı da bilir, gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve sana en kolay olanı kolaylaştırırız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde –eğer öğüt fayda verirse- sen de öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) İçi titreyerek korkan hatırlayıp kendine gelir"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kötü kimse ise öğütten kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsedir ki, en büyük ateşe girecektir"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun içinde ne ölür, ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Sonra onun içinde ne ölür, ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Ve Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat sizler, dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphesiz bu, önceki sahifelerde vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim’in ve Musa’nın sahifelerinde"
        }
    ]
}