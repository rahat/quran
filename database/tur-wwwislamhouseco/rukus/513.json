{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemiş ve namaz kılmamıştı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamış ve yüz çevirmiş"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da çalım satarak ailesine gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "“Bu azap sana layıktır, layık"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Evet! Layıktır sana, layık!” denilecek"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Yoksa insan, başı boş bırakılacağını mı sanıyor"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O akıtılan meniden bir nutfe değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra alaka olmuş, Allah onu yaratmış ve düzenlemişti"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ondan da iki eşi, erkek ve dişiyi var etmişti"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Bunu yapanın ölüleri diriltmeye gücü yetmez mi"
        }
    ]
}