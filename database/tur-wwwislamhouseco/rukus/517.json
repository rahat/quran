{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Şüphesiz ki takva sahipleri, gölgelerde pınar başlarındadır"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının çekip-arzu ettiği meyveler (arasındadırlar)"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yaptığınız ameller sebebi ile afiyetle yiyin, için"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz, iyilik yapanları işte böyle ödüllendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "O gün yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yiyin ve biraz yararlanın; muhakkak ki siz günahkârlarsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "O gün, yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara; “Rükû edin!” denildiği zaman rükû etmezlerdi"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "O gün yalanlayanların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Onlar bundan (Kur'an'dan) sonra artık hangi söze iman edecekler"
        }
    ]
}