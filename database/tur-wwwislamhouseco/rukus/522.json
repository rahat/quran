{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Yüzünü ekşitti ve arkasını döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine o âmâ geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin belki o temizlenecekti"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut öğüt alacaktı da bu öğüt ona fayda verecekti"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini muhtaç hissetmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen, ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "(İstemiyorsa) arınmamasından sen sorumlu değilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat koşup sana gelen kimse"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "(Allah'tan) korkuğu halde"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onu bırakıp oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır. Bu ancak bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen kimse ondan öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "şerefli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüce ve tertemiz olan"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Kâtiplerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Değerli ve itaatkâr olan (Meleklerin)"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası (inkârcı) insan! Ne nankördür o"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah, onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden yarattı ve belli bir şekle soktu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra da onu öldürüp kabre koydu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır. O (Rabbinin) kendisine emrettiğini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan yiyeceğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Şüphesiz biz suyu/yağmuru döktükçe döktük"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı iyiden iyiye yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Ve orada taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler ve yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler ve hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve hayvanlarınızın yararlanması için"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sağır eden o ses geldiğinde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gün kişi kardeşinden kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve evladından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün herkes için kendine yetecek bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün birtakım yüzler vardır ki pırıl pırıl parlarlar"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güleç ve neşelidir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Öyle yüzler de var ki o gün üzerini toz kaplamıştır"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onları bir siyahlık bürür"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar kâfirler, facirlerdir"
        }
    ]
}