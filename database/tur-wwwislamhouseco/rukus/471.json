{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Eğer bilirseniz, gerçekten bu büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Şüphesiz bu, değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli/korunmuş bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenmiş olanlar dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbi tarafından indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz, bu sözü mü yalanlıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete şükrediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hani can boğaza gelip dayandığında"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakıp durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz; ona sizden daha yakınız, ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki (tekrardan dirilip) ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eğer doğru söylüyor iseniz, onu (çıkmakta olan canı) geri çevirsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer o (ölen kişi), yakın kılınanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, güzel rızık ve Naim Cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o, sağdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sağdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer o, yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "İşte ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) Cehennem'e atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Şüphe yok ki, kesin gerçek işte budur"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "O halde sen, Yüce Rabbinin adını tesbih et"
        }
    ]
}