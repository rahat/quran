{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerçekleşmesine artık yalan diyecek yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsılınca"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olduğunda"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz toprak halinde dağılıp savrulduğu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağdakiler, (ne mutlu) o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdır onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, öncülerdir"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte onlar, yakınlaştırılmış olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Onlar Naim Cennetleri'ndedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir çoğu öncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Altın ile) işlenmiş tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan başları da ağrımaz ve akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "İşledikleri amellere karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen; yalnızca \"Selâm, selâm!\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, (ne mutlu) o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz sedir ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir çok meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksek döşekler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o hurileri yeni bir yaratılışla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ taraftakiler için"
        }
    ]
}