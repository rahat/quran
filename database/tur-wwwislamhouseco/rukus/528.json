{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Göğe ve târıka andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Târıkın ne olduğunu sen ne bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, (karanlığı) delip, geçen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Üzerinde gözetleyici/koruyucu bulunmayan hiç bir nefis (kimse) yoktur"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Öyleyse, insan neyden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Fışkırıp çıkan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bu su, bel ile kaburga kemikleri arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Şüphesiz Allah’ın onu, öldükten sonra tekrar diriltmeye de gücü yeter"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Sırların açığa çıktığı gün"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "(O gün) artık insan için ne bir kuvvet vardır, ne de bir yardımcı"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Yağmurlu göğe andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Yarık yarık çatlamış yere andolsun"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Şüphesiz o Kur’an, hak ile batılı ayırt eden bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, boş bir söz değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Şüphesiz onlar bir tuzak kurarlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Öyleyse kâfirlere mühlet ver, onlara biraz zaman tanı"
        }
    ]
}