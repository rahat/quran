{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "(Ey Muhammed!) Senin göğsünü açıp genişletmedik mi"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Yükünü üzerinden kaldırıp indirmedik mi"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "O (yük) senin belini bükmüştü"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Ve senin şanını yükseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Şüphesiz her zorlukla beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Gerçekten güçlükle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde boş kaldığın zaman (ibadet ve dua ile) yorul"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Ve yalnızca Rabbine yönel"
        }
    ]
}