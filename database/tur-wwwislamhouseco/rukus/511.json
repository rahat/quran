{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Hayır! And olsun Ay’a"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "Dönüp gittiği zaman geceye"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "Ve ağarmakta olan sabaha"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Şüphesiz o (Sekar), büyük (musibetlerden) biridir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "İnsanlar için bir uyarıcıdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "Sizden ileri gitmek ya da geri kalmak isteyen kimseler için"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Her nefis kazandığına karşılık bir rehindir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "Ancak Ashab-ı Yemin (sağ ehli) başkadır"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "(Onlar) cennetlerdedirler. Birbirlerine sorarlar"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "Suçlulardan"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "“Sizi Sekara/Cehennem'e sokan nedir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar derler ki; \"Biz namaz kılan kimseler değildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "“Yoksulları da doyurmazdık"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "(Batıla) Dalanlarla beraber biz de dalıp gitmiştik"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "“Hesap gününü de yalanlıyorduk"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "“Nihayet ölüm bize gelip çatıncaya dek"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Artık şefaat edenlerin şefaatleri onlara yarar sağlamaz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Öyleyse onlara ne oluyor da öğütten yüz çeviriyorlar"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Onlar adeta ürkütülmüş yaban eşekleri gibidir"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "Aslandan ürküp, kaçan"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Hayır; her biri önüne açılıvermiş sahifeler verilmesini ister"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Asla! Doğrusu onlar ahiretten korkmuyorlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Hayır! Şüphesiz o (Kur'an) ancak bir öğüttür"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Artık dileyen kimse ondan öğüt alır"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Allah dilemedikçe onlar öğüt almazlar. Kendisinden korkulmaya layık olan da, bağışlayıcı olan da O’dur"
        }
    ]
}