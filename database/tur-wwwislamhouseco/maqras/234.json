{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Yüzünü ekşitti ve arkasını döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine o âmâ geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin belki o temizlenecekti"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut öğüt alacaktı da bu öğüt ona fayda verecekti"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini muhtaç hissetmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "Sen, ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "(İstemiyorsa) arınmamasından sen sorumlu değilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat koşup sana gelen kimse"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "(Allah'tan) korkuğu halde"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen onu bırakıp oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır. Bu ancak bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Artık dileyen kimse ondan öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "şerefli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüce ve tertemiz olan"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Kâtiplerin ellerinde"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Değerli ve itaatkâr olan (Meleklerin)"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası (inkârcı) insan! Ne nankördür o"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah, onu hangi şeyden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden yarattı ve belli bir şekle soktu"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra da onu öldürüp kabre koydu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği zaman onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır. O (Rabbinin) kendisine emrettiğini yerine getirmedi"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan yiyeceğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Şüphesiz biz suyu/yağmuru döktükçe döktük"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı iyiden iyiye yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Ve orada taneler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzümler ve yoncalar"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytinler ve hurmalar"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyveler ve otlaklar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve hayvanlarınızın yararlanması için"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sağır eden o ses geldiğinde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "O gün kişi kardeşinden kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve evladından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün herkes için kendine yetecek bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün birtakım yüzler vardır ki pırıl pırıl parlarlar"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güleç ve neşelidir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Öyle yüzler de var ki o gün üzerini toz kaplamıştır"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Onları bir siyahlık bürür"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte onlar kâfirler, facirlerdir"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar, saçılıp dağıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer başıboş bırakıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler tutuşturulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Nefisler/kişiler (benzerleriyle) birleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri (toprağa) gömülen kız çocuğuna sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günâhtan dolayı öldürüldü?\" (diye)"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sahifeler (amel defterleri) açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök, sıyrılıp ayrıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem alevlendirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Her nefis önceden ne hazırladığını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! Yemin ederim gizlenen (yıldızlara)"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "O akıp akıp yörüngesinde giden ve gizlenenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karardığında geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Aydınlanmaya başladığında sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz o, çok değerli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Kuvvet sahibi; Arşın sahibinin katında itibarlı (bir elçinin)"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendine itaat edilen, üstelik güvenilir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız bir mecnun değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Onu (Cebrail'i) ufukta apaçık görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gayp hakkında cimri değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O, kovulmuş Şeytan'ın sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Öyleyse nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, yalnızca bütün âlemler için bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden dosdoğru olmak isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikçe siz de dileyemezsiniz"
        }
    ]
}