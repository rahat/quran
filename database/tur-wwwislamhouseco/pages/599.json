    "pages": [
        {
            "chapter": 98,
            "verse": 8,
            "text": "Onların Rablerinin yanındaki mükâfatları altından ırmaklar akan Adn cennetleridir. Onlar orada ebedi kalıcıdırlar. Allah onlardan razı olmuştur, onlar da ondan hoşnut olmuşlardır. İşte bu Rabbinden korkan kimseler içindir"
        },
        {
            "chapter": 99,
            "verse": 1,
            "text": "Yer, şiddetle sarsıldığı zaman"
        },
        {
            "chapter": 99,
            "verse": 2,
            "text": "Ve yeryüzü, ağırlıklarını çıkardığı zaman"
        },
        {
            "chapter": 99,
            "verse": 3,
            "text": "Ve insan ne oluyor buna dediği vakit"
        },
        {
            "chapter": 99,
            "verse": 4,
            "text": "İşte o gün, yer kendi haberlerini anlatır"
        },
        {
            "chapter": 99,
            "verse": 5,
            "text": "Çünkü Rabbin ona (öyle) vahyetmiştir"
        },
        {
            "chapter": 99,
            "verse": 6,
            "text": "O gün insanlar amellerinin kendilerine gösterilmesi için bölük bölük kabirlerinden çıkacaklardır"
        },
        {
            "chapter": 99,
            "verse": 7,
            "text": "Artık kim zerre ağırlığınca bir hayır işlerse, onun mükâfatını görecektir"
        },
        {
            "chapter": 99,
            "verse": 8,
            "text": "Kim de zerre ağırlığınca bir kötülük işlerse, onun cezasını görecektir"
        },
        {
            "chapter": 100,
            "verse": 1,
            "text": "Soluk soluğa koşanlara yemin olsun"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "(Koşarken) kıvılcım saçanlara"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "Sabah vakti baskın yapanlara"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "Tozu dumana katanlara"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "Topluluğun tam ortasına dalanlara"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "İnsan, Rabbine karşı gerçekten çok nankördür"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Ve şüphesiz kendisi de buna şahittir"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "Şüphesiz onun mal sevgisi de çok şiddetlidir"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi ki kabirlerde olanlar alt üst edildiğinde"
        }
    ]
}