{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan başları da ağrımaz ve akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "İşledikleri amellere karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen; yalnızca \"Selâm, selâm!\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, (ne mutlu) o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz sedir ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir çok meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksek döşekler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o hurileri yeni bir yaratılışla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ taraftakiler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir çoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler, ne bahtsızdır onlar"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman gölgesinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne bir serinlik, ne de bir güzellik"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar, bundan önce (arzularının hoşuna giden şeyler içinde) şımarmış kimselerdi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günah üzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz?\" diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Hem öncekiler, hem sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz"
        }
    ]
}