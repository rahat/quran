{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptuğu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun gerçekleşmesine artık yalan diyecek yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O; alçaltıcı, yükselticidir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer şiddetle sarsılınca"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Dağlar paramparça olduğunda"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Derken toz toprak halinde dağılıp savrulduğu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler de üç sınıf olduğunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sağdakiler, (ne mutlu) o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Soldakiler, ne bahtsızdır onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "(Hayırda) önde olanlar, öncülerdir"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "İşte onlar, yakınlaştırılmış olanlardır"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Onlar Naim Cennetleri'ndedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bir çoğu öncekilerdendir"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Altın ile) işlenmiş tahtlar üzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karşılıklı olarak oturup yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Ondan başları da ağrımaz ve akılları da giderilmez"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Beğendikleri meyveler"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının çektiği kuş etleri"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Ve iri gözlü huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "İşledikleri amellere karşılık olarak (verilir)"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Söylenen; yalnızca \"Selâm, selâm!\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sağdakiler, (ne mutlu) o sağdakilere"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Dikensiz sedir ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Salkım salkım muz ağaçlarında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamış gölgeler"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Çağlayarak akan sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bir çok meyveler"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Bitip tükenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yüksek döşekler içindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz, o hurileri yeni bir yaratılışla yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler kıldık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eşlerine düşkün ve yaşıt"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sağ taraftakiler için"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bir çoğu öncekilerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bir çoğu da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Soldakiler, ne bahtsızdır onlar"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "İçlerine işleyen bir ateş ve kaynar su içinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Simsiyah bir duman gölgesinde"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne bir serinlik, ne de bir güzellik"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Çünkü onlar, bundan önce (arzularının hoşuna giden şeyler içinde) şımarmış kimselerdi"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Büyük günah üzerinde ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz?\" diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Daha önceki atalarımız da mı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: \"Hem öncekiler, hem sonrakiler"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra gerçekten sizler ey sapıklar, yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Karınlarınızı hep ondan dolduracaksınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Üstüne de kaynar sudan içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Susamış develerin içişi gibi içeceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "İşte ceza gününde onlara sunulacak ziyafet budur"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi biz yarattık. (Tekrardan yaratılışı) tasdik etmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Akıttığınız meniyi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz? Yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Aranızda ölümü takdir eden biziz. Bizler aciz de değiliz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Yerinize benzerlerinizi getirip, değiştirmek ve sizi bilemediğiniz bir şekilde yeniden yaratmak hususunda"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Andolsun ki ilk yaratmayı bildiniz. O halde düşünüp öğüt almanız gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiğiniz şeyleri gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz? Yoksa bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Dileseydik onu kuru bir çöp yapardık; siz de şaşırıp kalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Muhakkak biz, çok ziyandayız"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha doğrusu biz yoksul bırakıldık (dersiniz)"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "İçtiğiniz suyu gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluttan siz mi indirdiniz? Yoksa indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Dileseydik onu tuzlu yapardık. Şükretmeniz gerekmez mi"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Tutuşturup, yakmakta olduğunuz ateşi gördünüz mü"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun ağacını siz mi yarattınız? Yoksa yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu, bir ibret ve gelip geçen yolcuların istifadesi için yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "O halde sen, Yüce Rabbinin adını tesbih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Eğer bilirseniz, gerçekten bu büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Şüphesiz bu, değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Gizli/korunmuş bir kitaptadır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenmiş olanlar dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Alemlerin Rabbi tarafından indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz, bu sözü mü yalanlıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Onu yalanlayarak mı size verilen nimete şükrediyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hani can boğaza gelip dayandığında"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakıp durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz; ona sizden daha yakınız, ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki (tekrardan dirilip) ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eğer doğru söylüyor iseniz, onu (çıkmakta olan canı) geri çevirsenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eğer o (ölen kişi), yakın kılınanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Ona rahatlık, güzel rızık ve Naim Cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o, sağdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Ey sağdaki! Sana selam olsun"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eğer o, yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "İşte ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) Cehennem'e atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Şüphe yok ki, kesin gerçek işte budur"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "O halde sen, Yüce Rabbinin adını tesbih et"
        }
    ]
}