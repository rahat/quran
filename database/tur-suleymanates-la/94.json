        {
            "chapter": 94,
            "verse": 1,
            "text": "Biz senin (bunalan) gogsunu acmadık mı (ondaki bunalımları, sıkıntıları giderip, onu ilim, hikmet ve huzur ile genisletmedik mi)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "Ve atmadık mı senin uzerinden yukunu"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "Ki (o, agırlıgından) sırtını catırdatmıstı"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "Senin sanını yukseltmedik mi"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Muhakkak her guclukle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Evet, her guclukle beraber bir kolaylık vardır"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "O halde (islerinden) bosaldıgın zaman (ibadete) dur"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "Rabb'ine niyaz et, yalvar"
        }
    ]
