{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yuce adını tesbih et (O'nun eksikliklerden uzak oldugunu an)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki (her seyi) yarattı, duzenledi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ve O ki herseyin miktarını, bicimini belirleyip hedefini gosterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ve O ki otlagı cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir cope cevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı), okutacagız, unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah'ın diledigini unutursun. O, acıgı da bilir, gizli olanı da"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eger hatırlatmak yarar verirse hatırlat, ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'a) Saygılı olan hatırlar (ogut alır)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bahtsız olan da ondan kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O da en buyuk atese girer"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra orada ne olur, ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu, mutluluga ermistir zekat veren"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama siz, su yakın hayatı yegliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu (hukumler), elbette ilk sahifelerde de vardı"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nn sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Siddet ve dehsetiyle her seyi) Sarıp kaplayacak olan(o felaket)in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler var ki o gun one dusuktur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısır, yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kendilerine kaynamıs bir gozeden (su) icirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru dikenden baska yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne semirtir, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de var ki o gun ni'met icinde mutlu"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Isinden memnun"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir bahcededir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yukseltilmis tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı develere, nasıl yaratılmıs"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge, nasıl yukseltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara, nasıl dikilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere, nasıl yayılıp dosenmis"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ogut ver, cunku sen ancak ogut verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerinde zorlayıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve inanmazsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en buyuk azabı eder"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Donusleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını gormek Bize duser"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun fecre (tan yeri agarmasına)"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Cift'e ve tek'e"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gitmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Bu( anıla)n (seyler)de akıl sahibi icin bir yemin var, degil mi? (Iste bunlara andolsun ki kafirler mutlaka azaba ugrayacaklardır)"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Gormedin mi Rabbin ne yaptı 'Ad(kavmin)e"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sutunlu Irem'e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki ulkeler arasında onun esi yaratılmamıstı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadi('l-Kura)da kayaları oya(rak evler yapa)n Semud(kavmin)e"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Ve kazıklar sahibi Fir'avn'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Bunlar ulkelerde azmıslardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda cok kotuluk etmislerdi"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yuzden Rabbin onların uzerine azab kırbacını carptı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Elbette Rabbin gozetleme yerindedir (her an kullarının fiillerini gozetlemektedir)"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Fakat insan oyledir; Rabbi ne zaman kendisini sınayıp ona ikramda bulunur, ona ni'met verirse: \"Rabbim bana ikram etti\" der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama Rabbi onu sınayıp rızkını daraltırsa: \"Rabbim beni alcalttı (perisan etti)\" der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır, dogrusu siz (Allah'tan ikram bekliyorsunuz ama kendiniz) yetime ikram etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksula yedirmege tesvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası hırsla yutuyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı pek cok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, yer birbiri ardınca sarsılıp dumduz edildigi zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizili durumda Rabbin geldigi zaman"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ve cehennem de getirildigi zaman. Iste o gun insan anlar, ama artık anlamanın kendisine ne yararı var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "(O zaman insan): \"Ah, keske ben bu hayatım icin (iyi isler yapıp) gonderseydim!\" der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gun O'nun yapacagı azabı kimse yapamaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "Ve O'nun vuracagı bagı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura eren nefis"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Razı edici ve razı edilmis olarak Rabbine don"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "(Iyi) Kullarım arasına gir"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime gir"
        }
    ]
}