{
    "maqras": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Cok merhametli (Allah)"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur'an'ı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı (konusup, dusuncelerini acıklamayı) ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes de, Ay da bir hesap ile(cereyan etmekte)dir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Necm (bitkiler, yıldızlar) ve agaclar (Allah'a) secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Gogu yukseltti ve mizanı koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Tartıda taskınlık edip dengeyi bozmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartıyı adaletle yapın, terazide eksiklik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "(Allah) Yeri halk icin koydu"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Onda meyva(lar) ve salkımlı hurmalar var"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Saplı ve yapraklı dane(ler) ve hos kokulu bitkiler var"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "(Ey cinler ve insanlar toplulugu) Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı kiremit gibi pismis camurdan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cin'i de halis atesten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "Iki dogunun ve iki batının Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "Iki denizi salıverdi, birbirine kavusuyorlar"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Aralarında bir engel vardır, birbirine gecip karısmıyorlar"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "Ikisinden de inci ve mercan cıkar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizde koca daglar gibi akıp giden kocaman gemiler de O'nundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 26,
            "text": "(Yer) Uzerinde bulunan her sey yok olacaktır"
        },
        {
            "chapter": 55,
            "verse": 27,
            "text": "Yalnız Rabbinin celal ve ikram sahibi yuzu baki kalacaktır"
        },
        {
            "chapter": 55,
            "verse": 28,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 29,
            "text": "Goklerde ve yerde bulunanlar (her seyi) O'ndan isterler. O, her gun (her an) yeni bir istedir"
        },
        {
            "chapter": 55,
            "verse": 30,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 31,
            "text": "Ey iki sekal, sizin icin de bos vaktimiz olacak (sizin de hesabınızı gorecegiz)"
        },
        {
            "chapter": 55,
            "verse": 32,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 33,
            "text": "Ey cinler ve insanlar toplulugu, goklerin ve yerin bucaklarından gecip gitmege gucunuz yeterse gecin gidin. Ancak kudretle gecebilirsiniz"
        },
        {
            "chapter": 55,
            "verse": 34,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 35,
            "text": "Ikinizin de uzerine, atesten yalın alev ve kıpkızıl bir duman (yahut erimis bakır) gonderilir, basaramazsınız"
        },
        {
            "chapter": 55,
            "verse": 36,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 37,
            "text": "Gok yarılıp da erimis yag gibi kıpkırmızı bir gul oldugu zaman"
        },
        {
            "chapter": 55,
            "verse": 38,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 39,
            "text": "O gun ne insana, ne de cin'e gunahından sorulur"
        },
        {
            "chapter": 55,
            "verse": 40,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 41,
            "text": "Suclular, simalarından tanınır, alınlar(ın)dan ve ayaklar(ın)dan tutulur"
        },
        {
            "chapter": 55,
            "verse": 42,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 43,
            "text": "Iste bu, sucluların yalanladıgı cehennemdir"
        },
        {
            "chapter": 55,
            "verse": 44,
            "text": "Onunla kaynar su arasında dolasırlar"
        },
        {
            "chapter": 55,
            "verse": 45,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 46,
            "text": "Rabbinin divanında dur(up hesap ver)mekten korkan kimseye iki cennet var"
        },
        {
            "chapter": 55,
            "verse": 47,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 48,
            "text": "Ikisinin de cesitli agacları, meyvaları var"
        },
        {
            "chapter": 55,
            "verse": 49,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 50,
            "text": "Ikisinde de akıp giden iki kaynak var"
        },
        {
            "chapter": 55,
            "verse": 51,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 52,
            "text": "Ikisinde de her meyvadan iki cift var"
        },
        {
            "chapter": 55,
            "verse": 53,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 54,
            "text": "(Orada) Astarları kalın atlastan yataklara yaslanırlar. Iki cennetin de devsirmesi yakındır"
        },
        {
            "chapter": 55,
            "verse": 55,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 56,
            "text": "Onlarda bakısları kısa (yalnız kocalarına bakan) oyle dilberler de var ki, bunlardan once onları ne insan, ne de cin kanatmamıstır"
        },
        {
            "chapter": 55,
            "verse": 57,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 58,
            "text": "Sanki onlar yakut ve mercandırlar"
        },
        {
            "chapter": 55,
            "verse": 59,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 60,
            "text": "Iyiligin karsılıgı, yalnız iyilik degil midir"
        },
        {
            "chapter": 55,
            "verse": 61,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 62,
            "text": "Bu ikisinin otesinde iki cennet daha var"
        },
        {
            "chapter": 55,
            "verse": 63,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 64,
            "text": "Yemyesildirler"
        },
        {
            "chapter": 55,
            "verse": 65,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 66,
            "text": "Ikisinde de fıskıran iki kaynak var"
        },
        {
            "chapter": 55,
            "verse": 67,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 68,
            "text": "Ikisinde de meyva, hurma ve nar var"
        },
        {
            "chapter": 55,
            "verse": 69,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 70,
            "text": "Onlarda da iyi huylu, guzel kadınlar var"
        },
        {
            "chapter": 55,
            "verse": 71,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 72,
            "text": "Cadırlara kapanmıs huriler"
        },
        {
            "chapter": 55,
            "verse": 73,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 74,
            "text": "Bunlardan once onları ne insan, ne de cin kanatmamıstır"
        },
        {
            "chapter": 55,
            "verse": 75,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 76,
            "text": "(Cennettekiler) Yesil yastıklara ve harikulade guzel islemeli doseklere yaslanırlar"
        },
        {
            "chapter": 55,
            "verse": 77,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 78,
            "text": "Buyukluk ve ikram sahibi Rabbinin adı ne yucedir"
        }
    ]
}