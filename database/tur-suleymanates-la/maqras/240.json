{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi o, kabirlerde olanlar dısarı atıldıgı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Goguslerde bulunanlar devsirildigi zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "O gun Rabbleri onların her halini haber almıs(gizli ve acık butun yaptıklarını bilmis)tir"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Carpan olay"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o carpan olay"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O carpan olayın ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar, yayılmıs pervaneler gibi olur(lar)"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar atılmıs renkli yun gibi olur"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları agır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, memmun edici bir hayat icindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onun anası (bagrına atılacagı) haviye(ucurum)dur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızgın bir atestir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Cokluk yarısı, sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz (kabre girinceye kadar mal artırmaga calıstınız)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır (olmaz bu), yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır, yakında bileceksiniz (hatanızı)"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır, (gercegi) kesin bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Mutlaka cehennemi gorur (oun varlıgını gozle gormus gibi kabul eder)diniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra onu kesin olarak gozle goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gun, (size verilen) ni'metten sorulacaksınız"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asra andolsun ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Insan ziyandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak inanıp iyi isler yapanlar, birbirlerine hakkı tavsiye edenler ve birbirlerine sabrı tavsiye edenler ziyanda degillerdir"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "(Insanları) Diliyle cekistiren, kas ve gozuyle isaretler yapıp alay eden her fesad kisinin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki mal yıgdı, onu saydı durdu"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının, kendisini ebedi yasatacagını sanıyor"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır, andolsun ki o, Hutame'ye atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame'nin ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah'ın tutusturulmus atesidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "(Bir ates) Ki gonullere isler"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "O, onların uzerine kapatılıp kilitlenecektir"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "(Kendileri,) Uzatılmıs direkler arasında (baglı) olarak (kalacaklardır)"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin, Fil sahiplerine ne yaptıgını gormedin m"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını bosa cıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Uzerlerine suru suru kuslar gonderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onlara camurdan sertlesmis taslar atan (kuslar)"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Nihayet onları, kurt yenigi ekin yapragı gibi yaptı"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureysi alıstırdıgı icin"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Onları kıs ve yaz yolculuguna alıstırdıgı icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu Ev(Ka'be'n)in Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O ki onları yedirip aclıktan kurtardı ve onları korkudan guvene kavusturdu"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Din(ahiret cezasın)ı yalanlayan(adam)ı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste o, oksuzu iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaga onayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Su namaz kılanların vay haline"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Ki, onlar namazlarından gaflet ederler (kıldıkları namazın degerini bilmez, ona onem vermezler)"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gosteris (icin ibadet) yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En ufak bir yardımı esirgerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Biz sana Kevser'i (bol ni'met, ilim ve buyuk seref) verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Oyleyse Rabbin icin namaz kıl ve nahret (kurban kes veya ellerini bogazına kadar kaldırıp tekbir al)"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl sonu kesik olan, sana bugzedendir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: Ey nankorler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin yaptıgınız ibadeti yapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim yaptıgım ibadeti yapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben asla sizin yapmakta oldugunuz ibadeti yapıcı degilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Siz de benim yapmakta oldugum ibadeti yapıcı degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim banadır"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah'ın yardımı ve fetih geldigi"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Ve insanların dalga dalga Allah'ın dinine girdiklerini gordugun zaman"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini overek tesbih et, O'ndan magfiret dile. Cunku O, tevbeyi kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebuleheb'in iki eli kurusun (yok olsun o); zaten yok oldu ya"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Ne malı, ne de kazandıgı onu (Allah'ın kahrından) kurtaramadı"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Alevli bir atese girecektir (o)"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da, odun hamalı olarak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda hurma lifinden bir ip olacaktır"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah Samed'dir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Kendisi dogurmamıstır ve dogurulmamıstır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hicbir sey O'nun dengi olmamıstır"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: Sıgınırım ben, karanlıgı yarıp sabahı ortaya cıkaran Rabbe"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlıgı coktugu zaman gecenin serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Dugumlere ufleyip tukuren buyucu kadınların serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Ve hased ettigi zaman hasedcinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: \"Sıgınırım ben, insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Insanların padisahına"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Insanların Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "O sinsi vesvesecinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "O ki insanların goguslerine (kotu dusunceler) fısıldar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerek insanlardan (olan butun vesvesecilerin serrinden Allah'a sıgınırım)"
        }
    ]
}