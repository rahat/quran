{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Kendisine yarastıgı uzere Rabbini(n buyrugunu) dinledigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatıl(ıp dumduz yapıl)dıgı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icindekileri dısarı atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve kendisine yarastıgı uzere Rabbini(n buyrugunu) dinledigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, sen, Rabbine varan yolda cabalayıp durmaktasın, nihayet O'na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "(O zaman) Kimin Kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin Kitabı arka tarafından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O, olumu cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, (dunyada) ailesi arasında (sımarık ve) sevincli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, hic (Rabbine) donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, Rabbi O'nu gormekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, and icerim; aksamın alaca karanlıgına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve (gecenin bagrında) topladıgı seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Degirmilesen aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz, mutlaka tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onların nesi var ki inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur'an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine o nankorler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların, iclerinde gizledikleri (dusunceleri) biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara acı bir azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak inanıp yararlı isler yapan kimseler icin kesintisiz bir mukafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burclar sahibi goge andolsun"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Va'dedilen gune andolsun"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(O gun) Sahide ve sahidlik edilene andolsun"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Ki kahroldu o hendegin adamları"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "O yakıt doldurulup tutusturulmus ates (hendeginin adamları)"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar, o(ates hendegi)nin basında oturmuslardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Ve onlar, mu'minlere yaptıklarını seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Mu'minler sırf aziz, ovguye layık Allah'a inandıkları icin o (zalim)ler onlardan oc aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O (Allah) ki goklerin ve yerin hukumranlıgı O'nundur. Allah, her seye tanıktır"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Inanmıs erkek ve kadınlara iskence edip sonra (yaptıklarına) tevbe etmeyenler (yok mu), onlar icin cehennem azabı vardır ve onlar icin yangın azabı vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Inanan ve iyi isler yapan kimseler icin de altlarından ırmaklar akan cennetler vardır. Iste buyuk basarı budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Suphesiz Rabbinin tutusu siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Ilkin var eden, sonra geri cevirip yeniden yaratan O'dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O bagıslayandır, sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars'ın sahibidir, yucedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Istedigini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "(Yani) Fir'avn ve Semud(kavimlerin)in"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Dogrusu, nankorler bir yalanlama icindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise onları arkalarından kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hayır, (Kur'an, onların dedikleri gibi bir soz degil), o serefli bir Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Korunan bir levhada(yazılı)dır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Goge ve tarık'a andolsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarık'ın ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Parlayan yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hicbir can yoktur ki basında bir koruyucu (bekci) olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Insan neden yaratıldıgına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel ile kaburga kemikleri arasından cıkan (bir sudan)"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "O (Allah), onu tekrar dondur(up yarat)maga kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlilerin (ortaya dokulup) yoklanacagı gun"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Insanın ne bir gucu, ne de bir yardımcısı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Donuslu goge andolsun"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(Bitkilerin cıkması icin) Catlayan yere andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "O (Kur'an), elbette (hak ile batılı) ayırdedici bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, saka degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar (onu iptal etmek icin) bir tuzak kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de (onları yakalamak icin) bir tuzak kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Hele sen o kafirlere muhlet ver, biraz bırak onları (bildiklerine gitsinler)"
        }
    ]
}