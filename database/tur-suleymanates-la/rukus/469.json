{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Olacak vak'a oldugu (kıyamet koptugu) zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onun olusunu yalanlayacak yoktur"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O alcaltıcı, yukselticidir (yerleri alt ust eder)"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddetliesarsıldıgı"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar serpildikce serpildigi"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Dagılan toz duman haline geldigi"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Ve sizler uc sınıf oldugunuz zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sagın adamları (amel defterleri sag tarafından verilenler), ne ugurlulardır onlar"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Solun adamları (amel defterleri sol tarafından verilenler), ne ugursuzlardır onlar"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve o sabıklar, sabıklar"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Iste, onlardır (Allah'a) yaklastırılanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Ni'met cennetlerinde"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Cogu oncekilerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerden (olan bu insanlar)"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın ve cevahirle islenmis tahtlar uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Onların uzerinde karsılıklı yaslanırlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Cevrelerinde, ebedi yasamaga erdirilmis gencler dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Akıp giden sarap kaynagından doldurulmus testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(Bir sarap ki) Ondan ne basları agrıtılır, ne de akılları giderilir"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Begendikleri meyva(lar)"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Canlarının cektigi kus et(ler)i"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Iri gozlu huriler"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Saklı inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıklarına karsılık olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos bir soz ve ne de gunaha sokan bir laf isitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Duydukları soz, yalnız \"Selam, selam\" dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sagın adamları, nedir o sagın adamları"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "(Onlar) Dikensiz kirazlar"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "(Kokunden tepesine kadar) meyva dizili muzlar"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uzamıs golge(ler)"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Fıskıran sular"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Pek cok mevya arasında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Tukenmeyen ve yasaklanmayan"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Ve yukseltilmis dosekler ustundedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz (oradaki) kadınları da yeniden bir guzel insa' etmisiz"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakireler yapmısızdır"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Hep yasıt sevgililer"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Sagın adamları icin"
        }
    ]
}