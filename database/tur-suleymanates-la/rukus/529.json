{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yuce adını tesbih et (O'nun eksikliklerden uzak oldugunu an)"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O ki (her seyi) yarattı, duzenledi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ve O ki herseyin miktarını, bicimini belirleyip hedefini gosterdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ve O ki otlagı cıkardı"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir cope cevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı), okutacagız, unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah'ın diledigini unutursun. O, acıgı da bilir, gizli olanı da"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yola muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eger hatırlatmak yarar verirse hatırlat, ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'a) Saygılı olan hatırlar (ogut alır)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bahtsız olan da ondan kacınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O da en buyuk atese girer"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra orada ne olur, ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu, mutluluga ermistir zekat veren"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama siz, su yakın hayatı yegliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu (hukumler), elbette ilk sahifelerde de vardı"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nn sayfalarında"
        }
    ]
}