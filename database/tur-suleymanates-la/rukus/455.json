{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Savurup kaldıranlara"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "(Yagmur) Yuklu (bulut)lara"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Kolayca akıp gidenlere"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Is(ler)i taksim edenlere (rızıkları, yagmurları dagıtan guclere) andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Size va'dedilen, mutlaka dogrudur"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Ceza muhakkak olacaktır"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "(Cesitli) yolları (yorungeleri) bulunan goge andolsun ki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Siz, cesitli soz(ler) icindesiniz"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Cevrilen, ondan cevriliyor"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "O (cesitli sozleri) atan yalancılar kahrolsun"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Onlar aptallık icinde yanılıp durmaktadırlar"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Ceza gunu ne zaman? diye sorarlar"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "O gun onlar ates uzerinde yakılacaklardır"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "(Kendilerine): \"Fitnenizi (fesadınızın cezasını) tadın! Acele isteyip durdugunuz sey budur iste!\" (denilecek)"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Korunanlar, cennetlerde, cesme baslarındadırlar"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Rablerinin, kendilerine verdigini alırlar. Cunku onlar bundan once guzel davranırlardı"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Geceleri pek az uyurlardı"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Seherlerde onlar istigfar ederlerdi"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Mallarında dilenci ve yoksul icin hak vardı"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Kesin inanacaklar icin yerde nice ibretler vardır"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Kendi canlarınızda da oyle. Gormuyor musunuz"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Gokte rızkınız da var, uyarıldıgınız (azab)da var"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Gogun ve yerin Rabbine andolsun ki o, sizin konustugunuz gibi gercektir"
        }
    ]
}