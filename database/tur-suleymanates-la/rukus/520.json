{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun sokup cıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Hemen cekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarısıp, gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken isi duzenleyenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun o gurultu sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından baska bir gurultu gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun bazı yurekler carpar"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozleri (korkudan) asagı kayar"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: \"Biz yine eski halimize dondurulecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz curumus kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Oyle ise bu, ziyanlı bir donustur! dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "O (olay zor degil) bir tek haykırıs(a bakmakta)dır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hemen onlar uyanıklık alanındadırlar"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa'nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbi ona Kutsal Vadi'de, \"Tuva\"'da unlemisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Fir'avn'a git, cunku o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: Arınmaga gonlun var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Seni Rabbin(in yolun)a ileteyim de O'ndan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ona buyuk mu'cizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o yalanladı, karsı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra sırtını dondu; (Musa'nın getirdiklerini iptal etmek icin) calısmaga koyuldu"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "(Adamlarını) Topladı, (onlara) bagırdı"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ben sizin en yuce Rabbinizim! dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah da onu, sonun ve ilkin (ahiretin ve dunyanın) azabıyle cezalandırdı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Suphesiz bunda (Allah'tan) korkacak kimse icin ibret vardır"
        }
    ]
}