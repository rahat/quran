{
    "rukus": [
        {
            "chapter": 55,
            "verse": 1,
            "text": "Cok merhametli (Allah)"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "Kur'an'ı ogretti"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "Insanı yarattı"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "Ona beyanı (konusup, dusuncelerini acıklamayı) ogretti"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "Gunes de, Ay da bir hesap ile(cereyan etmekte)dir"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "Necm (bitkiler, yıldızlar) ve agaclar (Allah'a) secde etmektedirler"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "Gogu yukseltti ve mizanı koydu"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "Tartıda taskınlık edip dengeyi bozmayın"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "Tartıyı adaletle yapın, terazide eksiklik yapmayın"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "(Allah) Yeri halk icin koydu"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "Onda meyva(lar) ve salkımlı hurmalar var"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "Saplı ve yapraklı dane(ler) ve hos kokulu bitkiler var"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "(Ey cinler ve insanlar toplulugu) Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "Insanı kiremit gibi pismis camurdan yarattı"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "Cin'i de halis atesten yarattı"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 17,
            "text": "Iki dogunun ve iki batının Rabbidir"
        },
        {
            "chapter": 55,
            "verse": 18,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 19,
            "text": "Iki denizi salıverdi, birbirine kavusuyorlar"
        },
        {
            "chapter": 55,
            "verse": 20,
            "text": "Aralarında bir engel vardır, birbirine gecip karısmıyorlar"
        },
        {
            "chapter": 55,
            "verse": 21,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 22,
            "text": "Ikisinden de inci ve mercan cıkar"
        },
        {
            "chapter": 55,
            "verse": 23,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        },
        {
            "chapter": 55,
            "verse": 24,
            "text": "Denizde koca daglar gibi akıp giden kocaman gemiler de O'nundur"
        },
        {
            "chapter": 55,
            "verse": 25,
            "text": "Simdi Rabbinizin hangi ni'metlerini yalanlıyorsunuz"
        }
    ]
}