{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Zakkum agacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Gunahkarların yemegidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Pota gibi karınlarda kaynar"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Sıcak suyun kaynaması gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "(Allah, zebanilere emreder): \"Tutun onu, cehennemin ortasına surukleyin"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra basının ustune kaynar su azabından dokun"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tad, zira sen kendince ustundun, serefliydin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "Iste o kuskulanıp durdugunuz sey budur"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Korunanlar ise guvenli bir makamdadır"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Bahcelerde ve cesme baslarında"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "Ince ipekten ve parlak atlastan giysiler giyerek karsılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "Ayrıca onları, iri gozlu hurilerle de evlendirmisizdir"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Orada, guven icinde, her meyveyi isterler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Orada ilk olumden baska olum tadmazlar (surekli yasarlar). Ve (Allah) onları cehennem azabından korumustur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbinden bir lutuf olarak (bu ni'metler kendilerine verilmistir). Iste, o buyuk basarı budur"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Biz o(Kur'a)nı senin diline kolaylastırdık ki, dusunup ogut alsınlar"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Biraz bekle, onlar da beklemektedirler (yakında baslarına neler gelecegini goreceklerdir)"
        }
    ]
}