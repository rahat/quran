{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler fıskırtıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına getirildigi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Her can, ne (yapıp) one surdugunu ve ne (yapmayıp) geride bıraktıgını bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan, seni engin kerem sahibi Rabbine karsı ne aldatıp isyana surukledi"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O (Rab) ki seni yarattı, seni duzenledi, sana olculu bir bicim verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni(n organlarını) diledigi sekilde birbirine ekledi"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, (bu gururunuzun sebebi sudur) siz ceza (gorme)yi yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Oysa uzerinizde koruyucu(yaptıklarınızı zabtedici melek)ler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Degerli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıgınız herseyi bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler ni'met icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de yakıcı ates icindedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gunu oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar ondan (hicbir yere kacıp) kaybolacak degillerdir"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Ve yine ceza gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O, kimsenin kimseye yardım edemeyecegi bir gundur! O gun buyruk, yalnız Allah'ındır"
        }
    ]
}