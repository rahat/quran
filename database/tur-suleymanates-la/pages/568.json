{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "Bugun burada onun icin candan bir dost yoktur"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "Irinden baska yiyecek de yoktur"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "Onu, (bile bile) hata isleyenlerden baskası yemez"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "Yoo, yemin ederim; gorduklerinize"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "Ve gormediklerinize"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "Ki, o (Kur'an) elbette degerli bir elcinin sozudur"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "O, bir sa'irin sozu degildir. Ne de az inanıyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "Bir kahinin sozu de degildir. Ne de az dusunuyorsunuz"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Alemlerin Rabbi tarafından indirilmistir"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "Eger o, (Muhammed), bazı laflar uydurup bize iftira etseydi"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "Elbette onun sag(elini veya kuvvet)ini alırdık"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "Sonra onun can damarını keserdik"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "Sizden hic kimse buna engel olamazdı"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "O (Kur'an), korunanlar icin bir oguttur"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "Biz, icinizde yalanlayanlar bulundugunu elbette biliyoruz"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "Dogrusu o, kafirler icin hasrettir"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "O, kesin gercektir"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Oyleyse ulu Rabbinin adını tesbih et (O'nun eksikliklerinden uzak, yucelerden yuce oldugunu an)"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "Bir soran, inecek azabı sordu"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "Kafirler icin, ki onu savacak yoktur"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "Yukselme derecelerinin sahibi Allah'tan"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve Ruh, miktarı elli bin yıl suren bir gun icinde O'na cıkar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Simdi sen guzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Onlar onu uzak goruyor(lar)"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın goruyoruz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gun gok, erimis maden gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Daglar, renkli yun gibi olur"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost dostun halini sormaz"
        }
    ]
}