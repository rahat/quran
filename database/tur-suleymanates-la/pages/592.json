{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama siz, su yakın hayatı yegliyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu (hukumler), elbette ilk sahifelerde de vardı"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim'in ve Musa'nn sayfalarında"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Siddet ve dehsetiyle her seyi) Sarıp kaplayacak olan(o felaket)in haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler var ki o gun one dusuktur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısır, yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın atese girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kendilerine kaynamıs bir gozeden (su) icirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru dikenden baska yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O da ne semirtir, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de var ki o gun ni'met icinde mutlu"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Isinden memnun"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir bahcededir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yukseltilmis tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bakmıyorlar mı develere, nasıl yaratılmıs"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goge, nasıl yukseltilmis"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Daglara, nasıl dikilmis"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere, nasıl yayılıp dosenmis"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ogut ver, cunku sen ancak ogut verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerinde zorlayıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir ve inanmazsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en buyuk azabı eder"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Donusleri Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını gormek Bize duser"
        }
    ]
}