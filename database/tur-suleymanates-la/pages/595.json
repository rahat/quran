{
    "pages": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Gunese ve onun aydın sabahına andolsun"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Onu izleyen aya andolsun"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Gunesi ortaya cıkaran gunduze andolsun"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu orten geceye andolsun"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu yapana andolsun"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yuvarlayıp doseyene andolsun"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu bicimlendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Ona bozuklugunu ve korunmasını (isyanını ve ita'atini) ilham edene andolsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "(Allah'tan baskasına tapmayarak) Nefsini yucelten kazanmıs"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "(Yaratıklara taparak) Onu alcaltan da ziyana ugramıstır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud (kavmi), azgınlıgı yuzunden (Hakk'ı) yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En haydutları ayaklandıgı zaman"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın elcisi onlara: \"Allah'ın devesine ve onun su icme hakkına dokunmayın!\" demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanladılar, deveyi kestiler. Rableri de, gunahları yuzunden azabı baslarına gecirip, orayı dumduz etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "(Rab) Bu isin sonundan korkmaz"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Orttugu zaman geceye andolsun"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Gorundugu zaman gunduze andolsun"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkegi ve disiyi yaratana andolsun ki"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Sizin isiniz cesit cesittir"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim (hayır icin) verir, korunursa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "Ve en guzel(soz)u dogrularsa"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Ona en kolay(yolda gitmey)i kolaylastırırız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Kim de cimrilik eder, kendini zengin (ve kendine yeterli) gorurse"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en guzel(soz)u de yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Ona da en guc(yolda gitmey)i kolaylastırırız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Cukura dustugu zaman malı ona hicbir fayda saglamaz"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Dogru yola iletmek bize aittir"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Son da ilk de (ahiret de dunya da) bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Ben sizi alev sacan bir atese karsı uyardım"
        }
    ]
}