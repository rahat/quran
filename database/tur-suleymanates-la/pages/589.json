{
    "pages": [
        {
            "chapter": 83,
            "verse": 35,
            "text": "Divanlar uzerinde (oturup) bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Kafirler, yaptıklarıyle cezalandılar mı? diye"
        },
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Kendisine yarastıgı uzere Rabbini(n buyrugunu) dinledigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatıl(ıp dumduz yapıl)dıgı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icindekileri dısarı atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve kendisine yarastıgı uzere Rabbini(n buyrugunu) dinledigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan, sen, Rabbine varan yolda cabalayıp durmaktasın, nihayet O'na varacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "(O zaman) Kimin Kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O, kolay bir hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin Kitabı arka tarafından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O, olumu cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve alevli atese girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, (dunyada) ailesi arasında (sımarık ve) sevincli idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, hic (Rabbine) donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır, Rabbi O'nu gormekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Yoo, and icerim; aksamın alaca karanlıgına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve (gecenin bagrında) topladıgı seylere"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Degirmilesen aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Ki, siz, mutlaka tabakadan tabakaya bineceksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onların nesi var ki inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur'an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Tersine o nankorler yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların, iclerinde gizledikleri (dusunceleri) biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara acı bir azabı mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak inanıp yararlı isler yapan kimseler icin kesintisiz bir mukafat vardır"
        }
    ]
}