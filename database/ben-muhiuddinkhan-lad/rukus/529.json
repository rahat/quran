{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Āpani āpanāra mahāna pālanakartāra nāmēra pabitratā barṇanā karuna"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "yini sr̥ṣṭi karēchēna ō subin'yasta karēchēna."
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ēbaṁ yini suparimita karēchēna ō patha pradarśana karēchēna"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "ēbaṁ yini tr̥ṇādi uṯpanna karēchēna"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "ataḥpara karēchēna tākē kāla ābarjanā."
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Āmi āpanākē pāṭha karātē thākaba, phalē āpani bismr̥ta habēna nā"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "āllāha yā icchā karēna tā byatīta. Niścaẏa tini jānēna prakāśya ō gōpana biṣaẏa."
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Āmi āpanāra jan'yē sahaja śarīẏata sahajatara karē dēbō."
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Upadēśa phalaprasū halē upadēśa dāna karuna"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "yē bhaẏa karē, sē upadēśa grahaṇa karabē"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "āra yē, hatabhāgā, sē tā upēkṣā karabē"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "sē mahā-agnitē prabēśa karabē."
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Ataḥpara sēkhānē sē marabē'ō nā, jībita'ō thākabē nā."
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Niścaẏa sāphalya lābha karabē sē, yē śud'dha haẏa"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "ēbaṁ tāra pālanakartāra nāma smaraṇa karē, ataḥpara nāmāya ādāẏa karē."
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Bastutaḥ tōmarā pārthiba jībanakē agrādhikāra dā'ō"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "athaca parakālēra jībana uṯkr̥ṣṭa ō sthāẏī."
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ēṭā likhita raẏēchē pūrbabatī kitābasamūhē"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "ibrāhīma ō mūsāra kitābasamūhē."
        }
    ]
}