{
    "rukus": [
        {
            "chapter": 69,
            "verse": 38,
            "text": "Tōmarā yā dēkha, āmi tāra śapatha karachi."
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "Ēbaṁ yā tōmarā dēkha nā, tāra"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "niścaẏa'i ē'i kōra'āna ēkajana sam'mānita rasūlēra ānīta."
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "Ēbaṁ ēṭā kōna kabira kālāma naẏa; tōmarā kama'i biśbāsa kara."
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "Ēbaṁ ēṭā kōna atīndriẏabādīra kathā naẏa; tōmarā kama'i anudhābana kara."
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "Ēṭā biśbapālanakartāra kācha thēkē abatīrṇa."
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "Sē yadi āmāra nāmē kōna kathā racanā karata"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "tabē āmi tāra dakṣiṇa hasta dharē phēlatāma"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "ataḥpara kēṭē ditāma tāra grībā."
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "Tōmādēra kē'u tākē rakṣā karatē pāratē nā."
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "Ēṭā khōdābhīrudēra jan'yē abaśya'i ēkaṭi upadēśa."
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "Āmi jāni yē, tōmādēra madhyē kē'u kē'u mithyārōpa karabē."
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "Niścaẏa ēṭā kāphēradēra jan'yē anutāpēra kāraṇa."
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "Niścaẏa ēṭā niścita satya."
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "Ata'ēba, āpani āpanāra mahāna pālanakartāra nāmēra pabitratā barnanā karuna."
        }
    ]
}