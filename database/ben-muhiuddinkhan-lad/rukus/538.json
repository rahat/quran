{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "pāṭha karuna āpanāra pālanakartāra nāmē yini sr̥ṣṭi karēchēna"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "sr̥ṣṭi karēchēna mānuṣakē jamāṭa rakta thēkē."
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Pāṭha karuna, āpanāra pālanakartā mahā daẏālu"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "yini kalamēra sāhāyyē śikṣā diẏēchēna"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "śikṣā diẏēchēna mānuṣakē yā sē jānata nā."
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Satyi satyi mānuṣa sīmālaṅghana karē"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "ē kāraṇē yē, sē nijēkē abhābamukta manē karē."
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Niścaẏa āpanāra pālanakartāra dikē'i pratyābartana habē."
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Āpani ki tākē dēkhēchēna, yē niṣēdha karē"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "ēka bāndākē yakhana sē nāmāya paṛē"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "āpani ki dēkhēchēna yadi sē saṯpathē thākē."
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Athabā khōdābhīti śikṣā dēẏa."
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Āpani ki dēkhēchēna, yadi sē mithyārōpa karē ō mukha phiriẏē nēẏa."
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Sē ki jānē nā yē, āllāha dēkhēna"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "kakhana'i naẏa, yadi sē birata nā haẏa, tabē āmi mastakēra sāmanēra kēśaguccha dharē hēm̐caṛāba'i"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "mithyācārī, pāpīra kēśaguccha."
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Ata'ēba, sē tāra sabhāsadadērakē āhabāna karuka."
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Āmi'ō āhabāna karaba jāhānnāmēra praharīdērakē"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "kakhana'i naẏa, āpani tāra ānugatya karabēna nā. Āpani sējadā karuna ō āmāra naikaṭya arjana karuna."
        }
    ]
}