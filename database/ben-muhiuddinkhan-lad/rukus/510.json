{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Hē cādarābr̥ta"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "uṭhuna, satarka karuna"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "āpana pālanakartāra māhātmya ghōṣanā karuna"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "āpana pōśāka pabitra karuna"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "ēbaṁ apabitratā thēkē dūrē thākuna."
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Adhika pratidānēra āśāẏa an'yakē kichu dibēna nā."
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Ēbaṁ āpanāra pālanakartāra uddēśē sabara karuna."
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Yēdina śiṅgāẏa phum̐ka dēẏā habē"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "sēdina habē kaṭhina dina"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "kāphēradēra jan'yē ēṭā sahaja naẏa."
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Yākē āmi anan'ya karē sr̥ṣṭi karēchi, tākē āmāra hātē chēṛē dina."
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Āmi tākē bipula dhana-sampada diẏēchi."
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "Ēbaṁ sadā saṅgī putrabarga diẏēchi"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "ēbaṁ tākē khuba sacchalatā diẏēchi."
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Ērapara'ō sē āśā karē yē, āmi tākē āra'ō bēśī dē'i."
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Kakhana'i naẏa! Sē āmāra nidarśanasamūhēra birud'dhācaraṇakārī."
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Āmi sattbara'i tākē śāstira pāhāṛē ārōhaṇa karāba."
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Sē cintā karēchē ēbaṁ manaḥsthira karēchē"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "dhbansa hōka sē, kirūpē sē manaḥsthira karēchē"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "ābāra dhbansa hōka sē, kirūpē sē manaḥsthira karēchē"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "sē ābāra dr̥ṣṭipāta karēchē"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "ataḥpara sē bhrūkuñcita karēchē ō mukha bikr̥ta karēchē"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "ataḥpara pr̥ṣṭhapradaśana karēchē ō ahaṅkāra karēchē."
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Ērapara balēchēḥ ētō lōka parasparāẏa prāpta jādu bai naẏa"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "ētō mānuṣēra ukti bai naẏa."
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Āmi tākē dākhila karaba agnitē."
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Āpani ki bujhalēna agni ki"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "ēṭā akṣata rākhabē nā ēbaṁ chāṛabē'ō nā."
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Mānuṣakē dagdha karabē."
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Ēra upara niẏōjita āchē uniśa (phērēśatā)."
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Āmi jāhānnāmēra tattbābadhāẏaka phērēśatā'i rēkhēchi. Āmi kāphēradērakē parīkṣā karāra jan'yē'i tāra ē'i saṅkhyā karēchi-yātē kitābīrā dr̥ṛhabiśbāsī haẏa, muminadēra īmāna br̥d'dhi pāẏa ēbaṁ kitābīrā ō muminagaṇa sandēha pōṣaṇa nā karē ēbaṁ yātē yādēra antarē rōga āchē, tārā ēbaṁ kāphērarā balē yē, āllāha ēra dbārā ki bōjhātē cēẏēchēna. Ēmanibhābē āllāha yākē icchā pathabhraṣṭa karēna ēbaṁ yākē icchā saṯpathē cālāna. Āpanāra pālanakartāra bāhinī samparkē ēkamātra tini'i jānēna ēṭā tō mānuṣēra jan'yē upadēśa bai naẏa."
        }
    ]
}