{
    "pages": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Hij fronste en keerde zich af"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "toen de blinde man bij hem kwam"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Maar hoe kun jij het weten, misschien dat hij zich loutert"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "of zich Iaat vermanen, zodat de vermaning hem baat"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Maar de zelfgenoegzame rijke"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "aan hem wijd je alle tijd"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Toch deert het jou niet dat hij zich niet loutert"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Maar wie op jou toe komt snellen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "en daarbij vol vrees is"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "aan hem schenk jij geen aandacht"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Nee toch, zij zijn een vermaning"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dus, wie wil denkt eraan"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "[geschreven als zij zijn] op vereerde bladen"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "die verheven zijn en reingemaakt"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "met de hand van schrijvers"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "die edel zijnen vroom"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "De mens kan doodvallen, ondankbaar als hij is"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Waaruit heeft Hij hem geschapen"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Uit een druppel heeft Hij hem geschapen en toen heeft Hij zijn maat bepaald"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Dan heeft Hij de weg voor hem gebaand"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Dan laat Hij hem sterven en begraaft hem"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Dan, wanneer Hij wil, wekt Hij hem op"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Welnee, hij heeft nog niets uitgevoerd van wat Hij geboden heeft"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "De mens moet maar eens zijn voedsel bekijken"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Dat Wij het water in gutsen uitgieten"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "dan de aarde in voren openbreken"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "en dan erin laten ontspruiten: graan"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "wijnstokken en voedergewassen"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "olijfbomen en palmen"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "in dichtbegroeide boomgaarden"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "vruchten en foerage"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "als vruchtgebruik voor jullie en jullie vee"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "En wanneer dan de overdonderende komt"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "op de dag dat de man voor zijn broer vlucht"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "en voor zijn vader en zijn moeder"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "en voor zijn metgezellin en zijn zonen"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "op die dag heeft elk van hen een zaak die hem bezighoudt"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Gezichten zullen er op die dag stralend zijn"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "lachend en verheugd"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "En gezichten zullen er op die dag zijn met stof erop"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "en met grauwheid overdekt"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Dat zijn zij, de ongelovigen, de overtreders"
        }
    ]
}