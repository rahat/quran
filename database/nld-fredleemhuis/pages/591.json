{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Bij de hemel en de nachtster"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "En hoe kom jij te weten wat de nachtster is"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "De doordringende ster"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Er is niemand voor wie er geen bewaker is"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "De mens moet maar eens kijken waaruit hij geschapen is"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Geschapen is hij uit gutsend vocht"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "dat tussen de lendenen en de ribben tevoorschijn komt"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Om hem terug te brengen, daartoe heeft Hij de macht"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "op de dag dat de geheimen worden getoetst"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Dan heeft hij geen kracht en geen helper"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Bij de hemel met zijn kringloop"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Bij de aarde die uitbot"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Het zijn beslissende woorden"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Het is geen scherts"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Zij beramen een list"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "En Ik zal een list beramen"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Geef de ongelovigen dan maar uitstel, verleen hun enig uitstel"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Prijs de naam van jouw Heer, de hoogste"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "die geschapen heeft en gevormd"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "en die geordend heeft en de goede richting gewezen"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "en die het weidegras laat opkomen"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "en het daarna dor en grauw maakt"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Wij zullen jou laten voorlezen en jij zult het niet vergeten"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "behalve wat God wil -- Hij kent wat openbaar is en wat verborgen blijft"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Wij leggen jou namelijk een gemakkelijke taak op"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Vermaan dus, als de vermaning nut heeft"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Wie vreest zal zich laten vermanen"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Maar vermijden zal het de ellendeling"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "die in het grote vuur zal braden"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Hij zal daarin dan niet sterven en niet leven"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Maar welgaan zal het wie zich loutert"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "de naam van zijn Heer noemt en de salaat bidt"
        }
    ]
}