{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Daarvoor dat de Koeraisj samenbrengen"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "dat zij hun zomer- en winterkaravaan samenbrengen"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Laten zij daarvoor de Heer van dit huis dienen"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "die hun voedsel tegen de honger geeft en die hen beveiligt voor de angst"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Heb jij hem gezien die de godsdienst loochent"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Dat is hij die de wees wegduwt"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "en die er niet op aandringt de behoeftige voedsel te geven"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "En wee hen die de salaat bidden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "die hun salaat veronachtzamen"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "die vertoon willen maken"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "en die de hulpverlening weigeren"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Wij waren het die jou de overvloed gaven"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Bid dan tot jouw Heer en breng offers"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Jouw hater, hij is de alleenstaande"
        }
    ]
}