{
    "rukus": [
        {
            "chapter": 93,
            "verse": 1,
            "text": "Bij het morgenlicht"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "Bij de nacht wanneer het stil is"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Jouw Heer heeft je niet verlaten, noch gehaat"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "En het hiernamaals is echt beter voor jou dan het tegenwoordige bestaan"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Jouw Heer zal jou zeker geven en dan ben jij voldaan"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Heeft Hij jou niet als wees gevonden en onderdak gegeven"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Jou dwalend gevonden en jou de weg gewezen"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "Jou behoeftig gevonden en rijk gemaakt"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "De wees dus, verdruk hem niet"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "De bedelaar, verjaag hem niet"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "En de genade van jouw Heer, vertel daarvan"
        }
    ]
}