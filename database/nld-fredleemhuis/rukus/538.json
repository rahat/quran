{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Lees voor in de naam van jouw Heer die heeft geschapen"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Geschapen heeft Hij de mens uit een bloedklonter"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Lees voor! Jouw Heer is de edelmoedigste"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "die onderwezen heeft met de pen"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Hij heeft de mens onderwezen wat hij niet wist"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Welnee, de mens is onbeschaamd"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "dat hij zich behoefteloos waant"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Maar tot zijn Heer is de terugkeer"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Heb jij hem gezien die een verbod oplegt"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "aan een dienaar wanneer hij bidt"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Meen jij dat hij op de goede weg is"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "of godvrezendheid gebiedt"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Meen jij dat hij loochent en zich afkeert"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Weet hij niet dat God ziet"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Welnee! Als hij niet ophoudt zullen Wij hem bij de kuif grijpen"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "een zondige leugenachtige kuif"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Laat hij dan zijn bende maar roepen"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Wij zullen de hellewachters roepen"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Nee hoor, gehoorzaam hem niet, maar buig je eerbiedig neer en kom nader"
        }
    ]
}