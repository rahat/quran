{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Is het verhaal van de bedekking tot jou gekomen"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Terneergeslagen gezichten zijn er op die dag"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "die zwoegen en zich afsloven"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "die in een heet vuur braden"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "en die te drinken krijgen uit een gloeiende bron"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Hun voedsel bestaat slechts uit doornstruiken"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Die maken niet vet en stillen de honger niet"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Zalige gezichten zijn er op die dag"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "die met hun streven tevreden zijn"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "in een hooggelegen tuin"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "waarin je geen onzin hoort"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Daar is een stromende bron"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Daar zijn verhoogde rustbedden"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "klaargezette bekers"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "rijen van kussens"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "en uitgespreide tapijten"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Kijken zij dan niet naar de kamelen hoe zij zijn geschapen"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "En naar de hemel hoe hij is opgeheven"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "En naar de bergen hoe zij zijn opgericht"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "En naar de aarde hoe zij is geÃ«ffend"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Vermaan dan; jij bent slechts een vermaner"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "En jij bent geen heerser over hen"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Maar wie zich afkeert en ongelovig is"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "hem zal God straffen met de grootste bestraffing"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Tot Ons is hun terugkeer"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Dan is bij Ons hun afrekening"
        }
    ]
}