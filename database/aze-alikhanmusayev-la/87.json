{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ən Uca Rəbbinin adına təriflər de"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O Rəbbin ki, hər seyi yaradıb kamilləsdirdi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O Rəbbin ki, hər seyin muqəddəratını əzəldən muəyyən edərək yol gostərdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rəbbin ki, otlagı cucərtdi"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da qaralmıs samana cevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Biz sənə Quranı elə oxumaq imkanı verəcəyik ki, o, yadından cıxmayacaq"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Əlbəttə, Allahın istədiyindən basqa. Həqiqətən, O, askardakından da, gizli qalandan da xəbərdardır"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Səni ən asan olana muvəffəq edərik"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Xatırlatmanın fayda verdiyini gorsən, onlara xatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allahdan qorxanlar oyud-nəsihət goturərlər"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ən bədbəxt kimsələr isə onu qulaqardına vurarlar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsə ki, Cəhənnəmə atılacaq"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O orada nə oləcək, nə də yasaya biləcəkdir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Gunahlardan təmizlənən kimsə isə ugur qazanmısdır"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "O kimsə ki, Rəbbinin adını xatırlayıb namaz qılmısdır"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Xeyr, siz dunya həyatını olduqca ustun tutursunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Axirət isə daha xeyirli və daha surəklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Həqiqətən də bu, əvvəlki səhifələrdə bildirilmisdir –"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahimin və Musanın səhifələrində"
        }
    ]
}