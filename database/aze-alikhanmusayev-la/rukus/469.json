{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Vaqiə qopacagı zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun qopdugunu hec kəs dana bilməz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, bəzilərini alcaldacaq, bəzilərini də ucaldacaqdır"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddətlə titrədiyi zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar parca-parca olub ovxalandıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "və ətrafa səpələnmis toz-torpaga donduyu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "siz uc dəstəyə ayrılacaqsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag tərəf sahibləri. Nə xosbəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol tərəf sahibləri. Nə bədbəxtdir sol tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Xeyirxah islərdə ondə gedənlər, Cənnətdə də ondədirlər"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allaha yaxın olanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nəim baglarında qalacaq kimsələrdir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların coxu əvvəlki nəsillərdən"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "az bir qismi də axırıncılardandır"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Onlar bəzənmis taxtlar ustundə"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "qarsı-qarsıya əyləsib dirsəklənəcəklər"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların ətrafında həmisəcavan xidmətci oglanlar fırlanacaqlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "cesmə sərabı ilə dolu badələr, bardaqlar və qədəhlərlə –"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ondan basları agrımaz və məst olmazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "bəyənib secdikləri meyvələr"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "və istədikləri qus əti ilə hərlənəcəklər"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onları iri qaragozlu hurilər gozləyir –"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "sədəf icində saxlanılmıs mirvariyə bənzər hurilər"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Bu, onların etdikləri əməllərin mukafatı olacaq"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Onlar orada nə bos soz, nə də gunaha səbəb olan sohbət esidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Ancaq: “Salam! Salam!”– sozləri esidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tərəf sahibləri. Nə xosbəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar tikansız sidr agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "meyvələri salxım-salxım asılmıs banan agacları altında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzanmıs kolgəliklərdə"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "daim axan sular kənarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "coxlu meyvələr"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "tukənməz və qadagan edilməyən meyvələr icində"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "və hundur dosəklər ustundə olacaqlar"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz Cənnətdəki qadınları yeni bicimdə yaradacagıq"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakirə qızlar edəcəyik –"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "ərlərini sevən, həmyasıdlar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bunlar sag tərəf sahibləri ucundur"
        }
    ]
}