{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun donub uzaqlasan gecəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun agarmaqda olan subh cagına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Dogrudan da o Cəhənnəm ən boyuk fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəsəriyyət ucun xəbərdarlıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxsı islər gorub irəli cıxmaq və ya gunah edib geriyə dusmək istəyənlər ucun"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazandıgının girovuna cevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sag tərəf sahiblərindən basqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar Cənnət baglarında bir-birlərindən sorusacaqlar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "gunahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qılanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməzdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sozlər danısanlarla birlikdə biz də danısardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gununu yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "olum yəqinliyi bizə gələnə qədər”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Odur ki, səfaət edənlərin səfaəti onlara fayda verməz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Onlara nə olub ki, nəsihətdən uz dondərirlər"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki urkudulmus vəhsi uzunqulaqlardır ki"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ovculardan (yaxud aslandan) qacırlar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Əksinə, onlardan hər biri vəhy olunmus səhifələrin məhz ona verilməsini istəyir"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Xeyr! Əksinə, onlar Axirətdən qorxmurlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Xeyr! Bu Quran bir nəsihətdir"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "Istəyən onu xatırlayar"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bilin ki, Allah istəmədikcə onlar xatırlaya bilməzlər. Mutləq qudrətindən qorxub cəkinməyə layiq olan da, bagıslamaga qadir olan da Odur"
        }
    ]
}