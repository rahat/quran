{
    "chapter": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "And olsun burclu goyə"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "And olsun vədə verilmis gunə"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "And olsun sahidlik edənə və edilənə"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Məhv olsun xəndək kənarında yıgısanlar"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Odunla alısdırılmıs xəndək"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar o xəndəyin qıragında oturub"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "mominlərə oz verdikləri isgəncələrə sahidlik edirdilər"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Kafirlər onlardan yalnız Qudrətli, Tərifəlayiq Allaha iman gətirdiklərinə gorə intiqam alırdılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Halbuki, goylərdə və yerdə mutləq hakimiyyət Ona məxsusdur. Allah hər seyə Sahiddir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "O kəslər ki, momin kisi və qadınları yandırmaqla sınaga cəkmis, sonra da tovbə etməmislər, onlara Cəhənnəm əzabı və onları yandırıb-yaxacaq od əzabı hazırlanmısdır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Subhəsiz ki, iman gətirib yaxsı islər gorənlər ucun agacları altından caylar axan Cənnət bagları vardır. Bu, boyuk muvəffəqiyyətdir"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Dogrudan da, Rəbbinin gunahkarları yaxalaması cox siddətlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Həqiqətən, O, hər seyi ilkin yaradır və onu yenidən bərpa edir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Bagıslayan da, Sevən də Odur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ərsin sahibidir, San-sohrətlidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Istədiyini edəndir"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Qosunlar haqqında əhvalat sənə catıbmı"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firon və Səmud qosunlarının"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Xeyr, kufr edənlər haqqı yalan saymaqdadırlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arxadan əhatə etmisdir"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Bəli, bu sanlı Qurandır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "O, muhafizə edilən lovhədədir"
        }
    ]
}