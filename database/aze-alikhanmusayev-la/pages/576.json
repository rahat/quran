{
    "pages": [
        {
            "chapter": 74,
            "verse": 18,
            "text": "Cunki o, fikirləsərək qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona olum olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona olum olsun! Gor nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Uz-gozunu tursudub qasqabagını tokdu"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını cevirib təkəbbur gostərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbazlardan esidilib təkrarlanan sehrdən basqa bir sey deyildir"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə salacagam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sag-salamat buraxmaz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun uzərində on doqquz gozətci mələk vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gozətcilərini yalnız mələklərdən etdik və onların sayını on doqquz etdik ki, bu, kafirlər ucun ancaq bir sınaq olsun, ozlərinə Kitab verilənlər yəqinlik hasil etsinlər, iman gətirənlərin imanı artsın, Kitab verilənlər və mominlər haqqa subhə etməsinlər və qəlblərində xəstəlik olanlar və kafirlər: “Allah bu məsəllə nə demək istəyir?”– desinlər. Allah istədiyi kimsəni belə azdırır, istədiyini də dogru yola yonəldir. Sənin Rəbbinin qosunları barədə yalnız Ozu bilir. Bu, bəsəriyyət ucun ancaq bir xatırlatmadır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun donub uzaqlasan gecəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun agarmaqda olan subh cagına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Dogrudan da o Cəhənnəm ən boyuk fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəsəriyyət ucun xəbərdarlıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxsı islər gorub irəli cıxmaq və ya gunah edib geriyə dusmək istəyənlər ucun"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazandıgının girovuna cevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sag tərəf sahiblərindən basqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar Cənnət baglarında bir-birlərindən sorusacaqlar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "gunahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qılanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməzdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sozlər danısanlarla birlikdə biz də danısardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gununu yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "olum yəqinliyi bizə gələnə qədər”"
        }
    ]
}