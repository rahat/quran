{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Aləmi Buruyənin xəbəri sənə gəlib catdımı"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun necə-necə uzlər zəlil olub yerə dikiləcək"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "uzulub əldən dusəcək"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "cox qızmar oda girəcək"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "qaynar cesmədən icirdiləcəkdir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlara daridən basqa bir yemək verilməyəcəkdir"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O onları nə doydurar, nə də aclıqdan xilas edər"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gun necəsinin uzundə fərəh gorunəcək"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "dunyadakı səylərindən məmnun qalacaq"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "uca Cənnətdə olacaq"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "orada faydasız soz esitməyəcəkdir"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada axar cesmələr vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada hundur taxtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "duzulmus piyalələr"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "yan-yana qoyulmus yastıqlar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "və dosəmələrə sərilmis xalcalar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Məgər onlar dəvənin necə yaradıldıgını gormurlər"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Goyun necə yuksəldiyini gormurlər"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dagların necə sancıldıgını gormurlər"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin necə dosədildiyini gormurlər"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Onlara nəsihət ver! Sən yalnız nəsihətcisən"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Sən onların ustundə hokmdar deyilsən"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Lakin uz dondərib kufr edəni"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ən siddətli əzabla cəzalandırar"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Subhəsiz ki, onların donusu Bizədir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onları sorgu-suala cəkmək də Bizə aiddir"
        }
    ]
}