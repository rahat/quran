{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "O qasqabagını sallayıb uzunu yana cevirdi –"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "yanına bir korun gəlməsinə gorə"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nə bilirdin ki, bəlkə o gunahlardan təmizlənəcəkdi"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "və yaxud nəsihət dinləyib faydalanacaqdı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Nəsihətə ehtiyacı olmayana gəlincə isə –"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sən ona diqqət yetirirsən"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun təmizlənməməyinin sənə bir dəxli yoxdur"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Səy gostərib sənin yanına gələn"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allahdan qorxan kimsəyə gəlincə"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ona məhəl qoymursan"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Xeyr! Subhəsiz ki, bu, bir nəsihətdir"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Kim istəsə, qoy onu xatırlayıb ibrət alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Bu Quran kəramətli səhifələrdədir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yuksək və pak səhifələrdədir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Bu səhifələr elcilərin əllərində –"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "mohtərəm və muti olanların əllərindədir"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Qoy olsun kafir insan! O necə də nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Qoy baxıb gorsun Allah onu nədən yaradıb"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Allah onu nutfədən yaratdı və muəyyən səkildə formalasdırdı"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da onun yolunu asanlasdırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu oldurub qəbirə yerləsdirdi"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Istədiyi bir zaman onu dirildəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Xeyr! O, hələ də Allahın ona buyurdugunu yerinə yetirməmisdir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Qoy insan yediyinə diqqət yetirsin bir az"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Həqiqətən, yagısı bol-bol Biz yagdırırıq"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra da yeri cat-cat yarıb"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "orada taxıl yetisdiririk"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Habelə uzum və yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytun və xurma agacları"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "sıx-sıx baglar"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyvələr və otlar da bitiririk"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Bu nemətlər sizin istifadəniz və mal-qaranızın faydalanması ucundur"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Qulaqbatırıcı bir səs gələndə –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "o gun insan qacacaq oz qardasından"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, atasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "arvadından və ovladlarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gun onlardan hər birinin yetərincə isi olacaqdır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gun necə-necə uzlər parlayacaq"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "guləcək və fərəhlənəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gun necə-necə uzlərə toz-torpaq hopacaq"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "onları zulmət buruyəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Məhz onlar kafirlər, gunahkarlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunəs sarınacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ulduzlar soluxub sonəcəyi zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "daglar hərəkətə gətiriləcəyi zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "bogaz dəvələr baslı-basına qalacaqları zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vəhsi heyvanlar bir yerə toplanılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dənizlər alovlanacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "hər kəs oz tayına qovusdurulacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "diri-diri torpaga basdırılmıs qız usagı sorusulacagı zaman –"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hansı gunaha gorə oldurulmusdur"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "səhifələr acılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "goy qopardılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cəhənnəm alovlandırılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "və Cənnət mominlərə yaxınlasdırılacagı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "hər kəs bu gun ucun ozunə nə tədaruk etdiyini biləcəkdir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "And icirəm gecə cıxıb gunduz batan ulduzlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "seyrə cıxıb gizlənən səyyarələrə"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "qaralmaqda olan gecəyə"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "və acılmaqda olan səhərə"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Həqiqətən, bu, mohtərəm Elcimizin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elci ki, quvvətlidir, Ərsin sahibi yanında boyuk hormət sahibidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "orada itaət ediləndir, etibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin dostunuz Muhəmməd divanə deyildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "O, Cəbraili aydın ufuqdə gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, qeybdən də xəsislik edən deyildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu Quran dasqalaq olunmus seytanın sozu də deyildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Elə isə ondan uz dondərib hara gedirsiniz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, aləmlərə yalnız bir nəsihətdir –"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "sizlərdən dogru yolda olmaq istəyənlər ucun"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Aləmlərin Rəbbi Allah istəməyincə, siz istəyə bilməzsiniz"
        }
    ]
}