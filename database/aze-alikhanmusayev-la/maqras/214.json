{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Vaqiə qopacagı zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "onun qopdugunu hec kəs dana bilməz"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O, bəzilərini alcaldacaq, bəzilərini də ucaldacaqdır"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yer siddətlə titrədiyi zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar parca-parca olub ovxalandıgı"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "və ətrafa səpələnmis toz-torpaga donduyu zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "siz uc dəstəyə ayrılacaqsınız"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Sag tərəf sahibləri. Nə xosbəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Sol tərəf sahibləri. Nə bədbəxtdir sol tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Xeyirxah islərdə ondə gedənlər, Cənnətdə də ondədirlər"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allaha yaxın olanlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Nəim baglarında qalacaq kimsələrdir"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Onların coxu əvvəlki nəsillərdən"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "az bir qismi də axırıncılardandır"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Onlar bəzənmis taxtlar ustundə"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "qarsı-qarsıya əyləsib dirsəklənəcəklər"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Onların ətrafında həmisəcavan xidmətci oglanlar fırlanacaqlar"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "cesmə sərabı ilə dolu badələr, bardaqlar və qədəhlərlə –"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ondan basları agrımaz və məst olmazlar"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "bəyənib secdikləri meyvələr"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "və istədikləri qus əti ilə hərlənəcəklər"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onları iri qaragozlu hurilər gozləyir –"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "sədəf icində saxlanılmıs mirvariyə bənzər hurilər"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Bu, onların etdikləri əməllərin mukafatı olacaq"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Onlar orada nə bos soz, nə də gunaha səbəb olan sohbət esidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Ancaq: “Salam! Salam!”– sozləri esidəcəklər"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Sag tərəf sahibləri. Nə xosbəxtdir sag tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar tikansız sidr agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "meyvələri salxım-salxım asılmıs banan agacları altında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "uzanmıs kolgəliklərdə"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "daim axan sular kənarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "coxlu meyvələr"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "tukənməz və qadagan edilməyən meyvələr icində"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "və hundur dosəklər ustundə olacaqlar"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz Cənnətdəki qadınları yeni bicimdə yaradacagıq"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakirə qızlar edəcəyik –"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "ərlərini sevən, həmyasıdlar"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Bunlar sag tərəf sahibləri ucundur"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Onların coxu əvvəlki nəsillərdən"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "bir qismi də axırıncılardandır"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Sol tərəf sahibləri. Nə bədbəxtdir sol tərəf sahibləri"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Onlar qızmar yel və qaynar su icində"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "qapqara duman kolgəsində olacaqlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Bu duman nə sərin, nə də xosagələndir"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Onlar bundan əvvəl cah-calal icində idilər"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "boyuk gunah islətməkdə israr edirdilər"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "və deyirdilər: “Məgər biz olub torpaq və sur-sumuk olduqdan sonra yenidənmi dirildiləcəyik"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Yaxud bizim əcdadlarımız dirildiləcəklərmi?”"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De: “Subhəsiz ki, əvvəlkilər də, sonrakılar da"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "bəlli bir gunun muəyyən vaxtında mutləq toplanılacaqlar"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra, siz ey dogru yoldan azanlar, haqqı yalan sayanlar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Siz mutləq zəqqum agacından yeyəcəksiniz"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "qarınlarınızı onunla dolduracaqsınız"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "ustundən də qaynar su icəcəksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Siz onu susamıs xəstə dəvələr kimi icəcəksiniz”"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Bu onların Haqq-hesab gunundəki ziyafətidir"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizi Biz yaratdıq. Bəs nə ucun dirildiləcəyinizi təsdiq etmirsiniz"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Axıtdıgınız nutfəni gordunuzmu"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz yaradırsınız, yoxsa Biz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Sizin aranızda olumu Biz muəyyən etdik və hec nə Bizim qarsımızı ala bilməz"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Sizi bənzərləriniz ilə əvəz etməyə və sizi ozunuz bilmədiyiniz basqa bir səkildə yaratmaga Bizə mane olan tapılmaz"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Siz ilk yaradılısı bilirsiniz. Bəs nə ucun dirildiləcəyiniz barədə dusunmursunuz"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Əkdiyinizi gordunuzmu"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz bitirirsiniz, yoxsa Biz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Əgər Biz istəsəydik, onu bir saman copunə dondərər, siz də heyrətə gələrdiniz"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "və deyərdiniz: “Biz ziyana ugradıq"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha dogrusu nemətlərdən məhrum olduq!”"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Icdiyiniz suyu gordunuzmu"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu buluddan siz endirirsiniz, yoxsa Biz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Əgər istəsəydik, onu acı edərdik. Bəs nə ucun sukur etmirsiniz"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Yandırdıgınız odu gordunuzmu"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz yaradırsınız, yoxsa Biz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu Cəhənnəmi yada salmaq və musafirlərin istifadəsi ucun yaratdıq"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Elə isə Ulu Rəbbinin adına təriflər de"
        }
    ]
}