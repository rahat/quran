{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Ne gercegi dogrulayıp kabul etmis, ne de namaz kılmıstı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat hem yalanlamıstı, hem yuzcevirmisti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına gurur icinde ehline (yakınlarına) gitmisti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra yine yazıklar olsun sana yazıklar! (Sen bu azaba cok daha layıksın)"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Insan basıbos bırakıldıgını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Kendisi atıskan bir meniyden degil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı oldu derken Allah, onu yaratıp bicimlendirerek duzene koydu"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Derken ondan disi ve erkek ciftler meydana getirdi"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Artık bunu yapan (Yuce Kudret), oluleri diriltmeye kadir degil midir"
        }
    ]
}