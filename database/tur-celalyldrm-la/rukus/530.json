{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Korku ve dehseti herseyi kaplayacak olan Kıyamet´in haberi elbette sana geldi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yuzler var ki, o gun kararıp asagılanmıstır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Calısıp didinmis, bosuna yorulup bitkin dusmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Iyice kızısmıs atese varıp yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Cok sıcak bir kaynaktan icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin deri´ dikeninden baska yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O ne besler, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yuzler de var ki, o gun yumusacık tazedir"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Calısıp cabaladıklarından memnundurlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek Cennet´tedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos-anlamsız soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yuksek tahtlar, kanepeler mevcuttur"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kupler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis koltuklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis yumusak yaygılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Devenin nasıl aratıldıgına"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Gogun nasıl yukseltildigine"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dagların nasıl dikildigine"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yeryuzunun nasıl yayıldıgına bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ogut ver; cunku sen ancak bir ogutcusun"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "nsanlar uzerine musallat (bir bekci) degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim (Hak´tan) yuzcevirip inkara saparsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en buyuk azab ile azabda bulunacak"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Supheniz olmasın ki, onların donusu ancak bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da hesaplarını gormek bize aittir"
        }
    ]
}