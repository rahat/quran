{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Gunes kararıp duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar parcalanıp dokuldugunde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Daglar yerinden oynatılıp yurutuldugunde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe olan develer (kendi haline) bırakıldıgında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahsi hayvanlar (korkudan) biraraya toplandıgında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler birbirine karısıp kaynastıgında (veya ates haline geldiginde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar bedenlerle; iyiler iyilerle, kotuler kotulerle birlestiginde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gomulen veya gomulmeden oldurulup oylece gomulen kız cocuguna, hangi suctan dolayı olduruldugu soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Diri diri gomulen veya gomulmeden oldurulup oylece gomulen kız cocuguna, hangi suctan dolayı olduruldugu soruldugunda"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amel) sahifeleri acıldıgında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gok(teki cisimler) yorungesinden kaydırılıp duruldugunde"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem iyice alev alev kızıstırdıgında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet (mu´minlere) yaklastırıldıgında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes neler hazırladıgını bilip anlayacak"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yemin ederim o (gunduzleyin) sinip gizlenen (yıldız)lara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(Geceleyin) ortaya cıkıp gozukenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karanlıga gomulen geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Teneffus eden (agarıp nefes nafes belirginlesen) sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Muhakkak o (Kur´an), yuce serefli, Ars´ın sahibi yanında guclu ve kudretli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Muhakkak o (Kur´an), yuce serefli, Ars´ın sahibi yanında guclu ve kudretli bir elcinin sozudur"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O elci kendisine uyulandır, guvenilirdir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadasınız (Muhammed) deli ve dengesiz degildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "And olsun ki. O, onu (Muhammed, Melek Cebrail´i) acık ufukta gordu"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O (Muhammed) gaybe karsı suc zanlısı veya cimri de degildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu (Kur´an) ilahi rahmetten kovulmus bir seytanın sozu degildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, alemler icin ve sizden dogru davranmayı arzu edenler icin katıksız bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "O, alemler icin ve sizden dogru davranmayı arzu edenler icin katıksız bir oguttur"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbi Allah dilemedikce siz dileyemezsiniz"
        }
    ]
}