{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgında"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar parcalanıp dokuldugunde"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler birbirine kaynayıp karıstıgında"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirler desilip icindekiler ortaya cıkarıldıgında"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes ondon gonderdigini ve geriye neler bıraktıgını bilecek"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! O cok sanlı lutuf ve iyiligi bol Rabbına karsı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, seni yaratıp (mustesna bicimde) duzenlemis ve (her uzvu yerince koyup) dengede tutmustur"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi herhangi bir sekilde sana ceki-duzen vermistir"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır, hayır; siz dini yalanlıyorsunuz (ceza ve mukafat gunune inanmıyorsunuz)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Supheniz olmasın ki, uzerinizde koruyucular, serefli saygıdeger katipler var"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Supheniz olmasın ki, uzerinizde koruyucular, serefli saygıdeger katipler var"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Iyiler suphesiz nimet icindedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de elbette Cehennem´dedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza ve hesap gunu varıp oraya girecekler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan artık ayrılıp uzaklasamıyacaklar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gunu (ceza ve hesap gunu) nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Evet, yine din gunu nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun hic kimse, digeri icin bir seye malik degildir. Emir o gun ancak Allah´a mahsustur"
        }
    ]
}