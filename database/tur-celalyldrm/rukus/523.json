{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş kararıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar parçalanıp döküldüğünde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yerinden oynatılıp yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe olan develer (kendi haline) bırakıldığında"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar (korkudan) biraraya toplandığında"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler birbirine karışıp kaynaştığında (veya ateş haline geldiğinde)"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar bedenlerle; iyiler iyilerle, kötüler kötülerle birleştiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen veya gömülmeden öldürülüp öylece gömülen kız çocuğuna, hangi suçtan dolayı öldürüldüğü sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Diri diri gömülen veya gömülmeden öldürülüp öylece gömülen kız çocuğuna, hangi suçtan dolayı öldürüldüğü sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amel) sahifeleri açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök(teki cisimler) yörüngesinden kaydırılıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem iyice alev alev kızıştırdığında"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Cennet (mü´minlere) yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Herkes neler hazırladığını bilip anlayacak"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Yemin ederim o (gündüzleyin) sinip gizlenen (yıldız)lara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "(Geceleyin) ortaya çıkıp gözükenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Karanlığa gömülen geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Teneffüs eden (ağarıp nefes nafes belirginleşen) sabaha ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Muhakkak o (Kur´ân), yüce şerefli, Arş´ın sahibi yanında güçlü ve kudretli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Muhakkak o (Kur´ân), yüce şerefli, Arş´ın sahibi yanında güçlü ve kudretli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O elçi kendisine uyulandır, güvenilirdir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız (Muhammed) deli ve dengesiz değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "And olsun ki. O, onu (Muhammed, Melek Cebrail´i) açık ufukta gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O (Muhammed) gaybe karşı suç zanlısı veya cimri de değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu (Kur´ân) ilâhî rahmetten kovulmuş bir şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "O halde nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, âlemler için ve sizden doğru davranmayı arzu edenler için katıksız bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "O, âlemler için ve sizden doğru davranmayı arzu edenler için katıksız bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Âlemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}