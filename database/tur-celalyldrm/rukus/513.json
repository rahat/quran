{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Ne gerçeği doğrulayıp kabul etmiş, ne de namaz kılmıştı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat hem yalanlamıştı, hem yüzçevirmişti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına gurur içinde ehline (yakınlarına) gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Sonra yine yazıklar olsun sana yazıklar! (Sen bu azaba çok daha lâyıksın)"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan başıboş bırakıldığını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Kendisi atışkan bir meniyden değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı oldu derken Allah, onu yaratıp biçimlendirerek düzene koydu"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Derken ondan dişi ve erkek çiftler meydana getirdi"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Artık bunu yapan (Yüce Kudret), ölüleri diriltmeye kadir değil midir"
        }
    ]
}