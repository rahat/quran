    "rukus": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş kabilesi´nin anlaşıp bağdaşması (sağlandığı) için"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "(Evet), yaz ve kış seferlerinde anlaşıp bağdaştıkları için"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Şu Beytin (Kabe´nin) Rabbı´na ibâdet etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O Rab ki, onları açlıktan (kurtarıp) doyurdu ve onları korkudan güvene kavuşturdu"
        }
    ]
}