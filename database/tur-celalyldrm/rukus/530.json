{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Korku ve dehşeti herşeyi kaplayacak olan Kıyâmet´in haberi elbette sana geldi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yüzler var ki, o gün kararıp aşağılanmıştır"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Çalışıp didinmiş, boşuna yorulup bitkin düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "İyice kızışmış ateşe varıp yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Çok sıcak bir kaynaktan içirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için derî´ dikeninden başka yiyecek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O ne besler, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yüzler de var ki, o gün yumuşacık tazedir"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Çalışıp çabaladıklarından memnundurlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek Cennet´tedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş-anlamsız söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yüksek tahtlar, kanepeler mevcuttur"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmuş küpler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmiş koltuklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş yumuşak yaygılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Devenin nasıl aratıldığına"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğün nasıl yükseltildiğine"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların nasıl dikildiğine"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yeryüzünün nasıl yayıldığına bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Öğüt ver; çünkü sen ancak bir öğütçüsün"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "nsanlar üzerine musallat (bir bekçi) değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim (Hak´tan) yüzçevirip inkâra saparsa"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah ona en büyük azâb ile azâbda bulunacak"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüpheniz olmasın ki, onların dönüşü ancak bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra da hesaplarını görmek bize aittir"
        }
    ]
}