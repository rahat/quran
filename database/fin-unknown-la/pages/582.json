{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Mita he kyselevat toinen toiseltaan"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Suurta sanomaako"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "josta he ovat eri mielta"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ei, pian he saavat sen tietaa"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Vielakin: ei! He tulevat sen pian kokemaan"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Emmeko ole luonut maan lakeudeksi"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "ja vuoret tukipilareiksi"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Me olemme luonut teidat parittain"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "ja saatanyt unen teille virkistykseksi"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "yon Me loimme teille verhoksi"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "ja paivan Me annoimme elatuksen hankkimiseen"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ylapuolellenne olemme asettanut seitseman vahvaa henkivaltaa"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "ja laittanut valoa sateilevan lampun"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "raskaista pilvista Me lahetamme vuolaita virtoja"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "kasvattaaksemme viljan ja kasvit"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "seka tiheina vihannoivat puutarhat"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Totisesti tuomion paiva on maaratty"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "paiva, jona puhalletaan pasuunaan ja te nousette joukoittain"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "paiva, jolloin taivas aukeaa ja siihen ilmenee joukko portteja"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "jolloin vuoret siirtyvat paikoiltaan ja muuttuvat kuin varjoiksi"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Totisesti, helvetti silloin omaansa odottaa"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "se on maaranpaa syntisia varten"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "he viruvat siella vuosikausia"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "saamatta nauttia viileata juomaa"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "heidan juomansa on kiehuvaa tai jaakylmaa"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "se on palkka, joka vastaa heidan syntejansa"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "He eivat totisesti uskoneet joutuvansa teoistaan tilille"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "vaan sanoivat julistustamme valheeksi, totuutta vaaristellen"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Mutta meilla on kaikki merkittyna muistiin"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "»Maistakaa siis! Me emme lisaa teille muuta kuin kuritusta.»"
        }
    ]
}