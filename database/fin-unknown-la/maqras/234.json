{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Han (profeetta) rypisti otsaansa ja kaantyi pois"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "koska sokea mies tuli hanen luokseen"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Mutta mista sina tiedat, eiko han olisi halunnut tehda parannusta"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "tai ottaa opetuksesta vaarin, niin etta se olisi koitunut hanen hyvakseen"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Mutta toisin menettelit rikkaan suhteen, joka ei luullut sinua tarvitsevansa"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "hanta kunnioittavasti kohtelit"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "vaikka et ollutkaan vastuussa hanen parannuksestaan"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Mutta hanesta, joka tulee luoksesi kovassa tuskassa"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "ja pelossa"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "hanesta et pida valia"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Totisesti tama on kehoitus"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "ottakoon taman varteen se, joka parhaan valitsee"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Totisesti ovat taman kirjoittaneet arvokkaille lehdille"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "puhtaille ja yleville"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "jalojen ja hurskaitten"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "kirjoittajien kadet"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Voi ihmista! Miten kiittamaton han onkaan"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Mista on Jumala hanet luonut"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Pienesta elinidusta! Han on luonut hanet ja kehittanyt hanet elinvoimaiseksi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "ja sitten raivannut hanelle tien, jota on helppo kayda"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sitten antaa Han hanen kuolla ja maaraa leposijan"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "ja aikanaan, oman paatoksensa mukaan, Han herattaa hanet kuolleista"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Mutta ei ihminen ole noudattanut sita, mita Han on kaskenyt hanen tehda"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Ajatelkoon ihminen edes saamaansa ravintoa"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Totisesti me lahetamme veden vuolaina virtoina"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Me murramme hanelle maan kamaran"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "ja annamme sen kasvaa viljaa"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "rypaleita ja yrtteja"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "oliiveja ja palmuja"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "tuuheita puutarhoja"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "hedelmia ja laitumia"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "elatukseksi teille ja karjallenne"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Mutta kun pasuunan mahtava pauhu kuuluu"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "sina paivana, jolloin mies pakenee veljensa luota"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "aitinsa ja isansa luota"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "vaimonsa ja poikiensa luota"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "tuona paivana tulee jokaisen kohdalle asia, joka tayttaa hanen mielensa kokonaan"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Toisten kasvot sina paivana kirkastuvat"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "hymyilevat ja sateilevat onnea"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "toisten kasvoja sina paivana peittaa tomu"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "ja verhoaa pimeys"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Nama ovat uskottomia ja vaarintekijoita"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kun aurinko menee umpeen"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "kun tahdet sammuvat"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "kun vuoret jarkkyvat"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kun kantavat kameelit hylataan"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kun pedot peloitetaan muille tienoille"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kun meret kuohuvat yli ayraittensa"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "kun sielut ja ruumiit jalleen yhtyvat"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "ja kun elavana haudatulta naiselta kysytaan"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "minka synnin vuoksi hanet surmattiin"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "kun kirjoitukset avataan"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "kun taivaan kansi pyyhkaistaan pois"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "kun helvetin tuli viritetaan"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ja kun paratiisi lahestyy"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "silloin saa jokainen sielu tietaa, mita se on itselleen valmistanut"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Vannon kautta tahtien"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "jotka kulkevat ratojaan ja katoavat"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "kautta saapuvan yon"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "ja valkenevan aamun"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "»Tama on totisesti jalon sananjulistajan sanoma"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "sellaisen, jonka valta tulee voiman Herralta"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "jota on toteltava ja joka ei luottamusta peta"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Ei teidan heimolaisenne (profeetta) houraile"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Totisesti han on nahnyt enkeli Gabrielin kirkkaalla taivaanrannalla"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "eika han ole kitsas nakymattomien asiain salaaja"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "ei tama myoskaan ole karkoitetun paholaisen ennustelua"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Mita kohti siis kuljette"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Tama ei ole muuta kuin varoitus maailman kansoille"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "jokaiselle teista, joka tahtoo pysytella oikealla tiella"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Mutta ette te itse tahdo, ellei Jumala, maailmojen Herra,sita tahdo.»"
        }
    ]
}