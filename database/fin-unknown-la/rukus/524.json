{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kun taivas rikki repeytyy"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "kun tahdet hajalle pirstoutuvat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kun virrat tulvivat vuolaina"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "ja haudat avautuvat"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "saa jokainen sielu tietaa, mita on tehnyt ja mita laiminlyonyt"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Oi, ihminen, mika on vietellyt sinut jaloa Herraasi vastaan"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "joka on luonut sinut, tehnyt sinut taydelliseksi ja sopusuhtaiseksi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Haluamaansa muotoon Han on sinut valanut"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Voi, te sanotte tuomiota valheeksi"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "mutta totisesti on ylapuolellanne vartijoita"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "jaloja kirjoihin merkitsijoita"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "jotka tuntevat tekonne"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Totisesti saavat hurskaat osakseen taivaan autuuden"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "ja totisesti joutuvat jumalattomat helvetin tuleen"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "he joutuvat sinne tuomion paivana"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "eivatka he voi sita mitenkaan valttaa"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Kasitatko, mika Tuomion paiva on"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Vielakin: kasitatko, mika Tuomion paiva on"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Se on paiva, jona yksikaan sielu ei mahda mitaan toisen hyvaksi. Herran on kaikki valta sina paivana"
        }
    ]
}