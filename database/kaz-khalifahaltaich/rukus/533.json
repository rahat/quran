{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Күн және оның жарығымен"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "әрі оның соңынан ілескен кездегі аймен"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "және оны / күнді / анық көрсеткен кездегі күндізбен"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "әрі оны жапқан кездегі түнмен"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Аспан және оны тұрғызғанмен"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "әрі жермен және оны Жайғанмен"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "және жанмен әрі оны лайықтап Жасағанмен"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "сөйтіп оған / жанға / бұзықтықты әрі тақуалықты / Аллаһтың жазасынан қорқып, сақтануды / Білдірушімен ант етемін"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Оны / жанды / тазартқан мұратына жетті"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ал, оны / күнәға / батырған зиянға ұшырады"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Шектен шығулары себепті Сәмұд елі / Елшіні / өтірікшіге шығарды"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Сонда олардың ең бақытсызы қозғалғанда"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Аллаһтың елшісі / Салих / оларға: «Аллаһтың түйесіне әрі оның суарылуына / тиіспеңдер / », - деді"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Ал, олар болса оны / Елшіні / өтірікшіге шығарып, оның / түйенің / тірсегін кесті / өлтірді / . Сонда, Раббысы олардың қылмыстары үшін бәріне бірдей апат жіберді"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Әрі Ол / Аллаһ / оның салдарынан қауіптенбейді"
        }
    ]
}