{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Олар бір-бірінен не туралы сұрасып жатыр"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Ұлы хабар туралы"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "өздері ол жөнінде қарама-қайшылықта"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Жоқ, олай емес! Олар жақында біледі"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Кейін, тіпті олай емес! Олар әлі-ақ біледі"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Біз жерді төсеніш етпедік пе"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "ал тауларды қазық"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Әрі Біз сендерді жұптар етіп жараттық"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Ал ұйқыларыңды тынығу еттік"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "әрі түнді жамылғы етіп жасадық"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "және күндізді тіршілік / уақыты / етіп жасадық"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Әрі үстеріңнен жеті берікті құрдық"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "және лаулаған шырақ жасадық"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Әрі сығылушылардан / бұлттардан / мол су түсірдік"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "онымен дән және өсімдікті шығару үшін"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "және ну бақтарды да"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Ақиқатында, Айыру күні - белгіленген бір мерзім"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Ол күні сүр үрленеді де сендер топ-топ болып келесіңдер"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Әрі аспан ашылып, қақпаларға айналады"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "ал таулар жүргізіліп, сағымға айналады"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Ақиқатында, Жаһаннам - аңдып, күтіп тұрушы"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "шектен шығушылар үшін қайтар орын"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Олар онда ғасырлар бойы қалады"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Ол жерде олар салқындықты да, су сын да татпайды"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "тек қайнап тұрған су мен іріңнен басқа"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "істеріне лайықты қайтарым ретінде"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Анығында, олар, есепке тартылуды «үміт» етпеген / қорықпаған / еді"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "әрі аяттарымызды мүлде өтірікке шығарған еді"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Ал, Біз барлық нәрсені жазып, есептеп қойдық"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Енді, татыңдар. Сендерге азаптан басқа ешнәрсені арттырмаймыз"
        }
    ]
}