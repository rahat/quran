{
    "pages": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kur Dielli të mblidhet e të humbë shkëlqimin"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "kur yjet të rrëzohen"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dhe malet të lëvizin tutje"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kur devetë barrse të braktisen"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "dhe egërsirat të tubohen"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kur detet të vlojnë"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "dhe shpirtrat të bashkohen (me trupat)"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "kur foshnja e varrosur për së gjalli të pyetet"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "për çfarë faji ishte vrarë"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "kur fletët të shpërndahen"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "dhe qielli të zhvishet"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "kur Xhehenemi të flakërojë"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "dhe Xheneti të afrohet"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "atëherë çdokush do të marrë vesh çfarë kishte përgatitur (për këtë Ditë)"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Betohem për ata (planetë) që tërhiqen"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "që lindin e perëndojnë"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "për natën kur bie terri"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "e për agimin kur nis të zbardhë"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "se ky (Kuran) është Fjalë e (kumtuar prej) një të Dërguari fisnik"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "që zotëron fuqi dhe pozitë të lartë te Zoti i Fronit"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "e që është i respektuar atje dhe besnik"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Shoku juaj[397] nuk është i marrë"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Ai e ka parë atë[398] në horizontin e qartë"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "dhe nuk mbulon asnjë të fshehtë prej së Padukshmes"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "As ky (Kuran) nuk është fjalë e djallit të mallkuar"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Prandaj, nga po ia mbani"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Ai është veçse këshillë për botët"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "për secilin nga ju që dëshiron të ndjekë rrugën e drejtë"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Por ju nuk mund të dëshironi, përveçse me vullnetin e Allahut, Zotit të botëve"
        }
    ]
}