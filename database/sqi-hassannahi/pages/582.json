{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Për çfarë e pyesin ata njëri-tjetrin"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Për Lajmin e madh"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "rreth të cilit ata kanë kundërshtime"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Ani, shpejt do ta marrin vesh"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Sigurisht që shpejt do ta marrin vesh"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "A nuk jua kemi bërë Tokën si shtrat"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "e malet si shtylla"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ne ju kemi krijuar në çifte"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "dhe gjumin jua kemi bërë për prehje"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Natën jua kemi bërë mbulesë"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "ndërsa ditën e kemi caktuar për të punuar"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Mbi ju kemi ndërtuar shtatë qiej të fortë"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "dhe kemi vënë kandil (diell) të shndritshëm"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Nga retë Ne ju lëshojmë ujëra të bollshme"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "për rritjen e drithërave, bimëve"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "dhe të kopshteve të dendura"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Sigurisht, Dita e Ndarjes vendimtare është caktuar"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Atë Ditë do të fryhet në Sur dhe ju do të vini grupe-grupe"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Dyert e qiellit do të hapen"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "dhe malet do të shtyhen tutje e do të bëhen si mirazh"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Me të vërtetë, Xhehenemi do të bëhet pusi"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "vendbanim i caktuar për keqbërësit"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "që aty të mbeten përgjithmonë"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Aty nuk do të shijojnë as freski, as pije"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "përpos ujit të valuar dhe qelbësirave"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "si shpërblim përkatës (të veprave të tyre)"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Në të vërtetë, ata as që e çonin nëpër mend se do të jepnin llogari"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "dhe shpalljet Tona i mohonin prerazi"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Por Ne çdo gjë e kemi shënuar në një libër"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Prandaj do t’u themi: “Shijojeni këtë! Ne nuk do t’ju shtojmë gjë tjetër përveçse dënim!”"
        }
    ]
}