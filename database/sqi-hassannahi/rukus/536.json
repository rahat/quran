{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Vallë, a nuk ta hapëm ty (Muhamed) kraharorin (për të pranuar besimin)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "dhe ta hoqëm barrën"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "e cila ta rëndonte tepër kurrizin"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "dhe ta ngritëm lart emrin"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Me të vërtetë, pas vështirësisë - vjen lehtësimi"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "Me të vërtetë, pas vështirësisë - vjen lehtësimi"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Prandaj, kur të çlirohesh (nga punët e ndryshme), përpiqu fort (në adhurim)"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "dhe vetëm ndaj Zotit tënd përkushtohu"
        }
    ]
}