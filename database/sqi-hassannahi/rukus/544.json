{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Ju ka hutuar rivaliteti për të shtuar"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "derisa të shkoni në varre"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Gjithsesi, do ta merrni vesh"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Madje, së shpejti do ta merrni vesh"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Kujdes! Ah, sikur ta dinit të vërtetën me siguri"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Sigurisht që do ta shihni Zjarrin flakërues"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Pastaj, me të vërtetë, do ta shihni atë me syrin e sigurisë"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Pastaj, atë Ditë, do të pyeteni për kënaqësitë (e kësaj bote)"
        }
    ]
}