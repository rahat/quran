{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kur qielli të çahet"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "dhe yjet të derdhen"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kur detet të përzihen"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "dhe varret të rrotullohen"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "atëherë çdokush do të mësojë për veprat që ka bërë dhe që ka lënë pa bërë"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O njeri, ç’të mashtroi ty që nuk i besove Zotit tënd bujar"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "i Cili të krijoi ty, të dha përmasa të rregullta dhe të harmonizoi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "dhe, që të ka mbrujtur në çfarëdo forme që ka dashur"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Por jo! Ju e quani të gënjeshtërt Gjykimin (pas ringjalljes)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "ndonëse mbi ju ka rojtarë (që ju vëzhgojnë)"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "shënues të nderuar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "që dinë gjithçka që bëni"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Vërtet, punëdrejtët do të jenë në Xhenet"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kurse fajtorët, me siguri, do të jenë në Zjarrin flakërues"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "në të cilin do të digjen në Ditën e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "pa mundur t’i shmangen atij"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "E kush do të ta shpjegojë ty se ç’është Dita e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Edhe njëherë: Kush do të ta shpjegojë ty se ç’është Dita e Gjykimit"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Ajo është Dita, kur askush nuk do të ketë fuqi për të bërë gjë për ndonjë tjetër dhe, kur pushteti do të jetë vetëm i Allahut"
        }
    ]
}