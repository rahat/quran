{
    "rukus": [
        {
            "chapter": 15,
            "verse": 45,
            "text": "إِنَّ ٱلۡمُتَّقِينَ فِي جَنَّٰتࣲ وَعِيُونٍ"
        },
        {
            "chapter": 15,
            "verse": 46,
            "text": "ٱدۡخُلُوهَا بِسَلَٰمٍ ءَامِنِينَ"
        },
        {
            "chapter": 15,
            "verse": 47,
            "text": "وَنَزَعۡنَا مَا فِي صُدُورِهِمُۥ مِنۡ غِلٍّ إِخۡوَٰنًا عَلَىٰ سُرُرࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 15,
            "verse": 48,
            "text": "لَا يَمَسُّهُمُۥ فِيهَا نَصَبࣱ وَمَا هُمُۥ مِنۡهَا بِمُخۡرَجِينَ"
        },
        {
            "chapter": 15,
            "verse": 49,
            "text": "۞نَبِّئۡ عِبَادِيَ أَنِّيَ أَنَا ٱلۡغَفُورُ ٱلرَّحِيمُ"
        },
        {
            "chapter": 15,
            "verse": 50,
            "text": "وَأَنَّ عَذَابِي هُوَ ٱلۡعَذَابُ ٱلۡأَلِيمُ"
        },
        {
            "chapter": 15,
            "verse": 51,
            "text": "وَنَبِّئۡهُمُۥ عَن ضَيۡفِ إِبۡرَٰهِيمَ"
        },
        {
            "chapter": 15,
            "verse": 52,
            "text": "إِذۡ دَخَلُواْ عَلَيۡهِۦ فَقَالُواْ سَلَٰمࣰ ا قَالَ إِنَّا مِنكُمُۥ وَجِلُونَ"
        },
        {
            "chapter": 15,
            "verse": 53,
            "text": "قَالُواْ لَا تَوۡجَلۡ إِنَّا نُبَشِّرُكَ بِغُلَٰمٍ عَلِيمࣲ‏"
        },
        {
            "chapter": 15,
            "verse": 54,
            "text": "قَالَ أَبَشَّرۡتُمُونِي عَلَىٰ أَن مَّسَّنِيَ ٱلۡكِبَرُ فَبِمَ تُبَشِّرُوٓنِّ"
        },
        {
            "chapter": 15,
            "verse": 55,
            "text": "قَالُواْ بَشَّرۡنَٰكَ بِٱلۡحَقِّ فَلَا تَكُن مِّنَ ٱلۡقَٰنِطِينَ"
        },
        {
            "chapter": 15,
            "verse": 56,
            "text": "قَالَ وَمَن يَقۡنَطُ مِن رَّحۡمَةِ رَبِّهِۦ إِلَّا ٱلضَّآلُّونَ"
        },
        {
            "chapter": 15,
            "verse": 57,
            "text": "قَالَ فَمَا خَطۡبُكُمُۥ أَيُّهَا ٱلۡمُرۡسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 58,
            "text": "قَالُواْ إِنَّا أُرۡسِلۡنَا إِلَىٰ قَوۡمࣲ مُّجۡرِمِينَ"
        },
        {
            "chapter": 15,
            "verse": 59,
            "text": "إِلَّا ءَالَ لُوطٍ إِنَّا لَمُنَجُّوهُمُۥ أَجۡمَعِينَ"
        },
        {
            "chapter": 15,
            "verse": 60,
            "text": "إِلَّا ٱمۡرَأَتَهُۥ قَدَّرۡنَا إِنَّهَا لَمِنَ ٱلۡغَٰبِرِينَ"
        }
    ]
}