{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "وَٱلطُّورِ"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "وَكِتَٰبࣲ مَّسۡطُورࣲ‏"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "فِي رَقࣲّ مَّنشُورࣲ‏"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "وَٱلۡبَيۡتِ ٱلۡمَعۡمُورِ"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "وَٱلسَّقۡفِ ٱلۡمَرۡفُوعِ"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "وَٱلۡبَحۡرِ ٱلۡمَسۡجُورِ"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "إِنَّ عَذَابَ رَبِّكَ لَوَٰقِعࣱ‏"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "مَّا لَهُۥ مِن دَافِعࣲ‏"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "يَوۡمَ تَمُورُ ٱلسَّمَآءُ مَوۡرࣰ ا"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "وَتَسِيرُ ٱلۡجِبَالُ سَيۡرࣰ ا"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "فَوَيۡلࣱ يَوۡمَئِذࣲ لِّلۡمُكَذِّبِينَ"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "ٱلَّذِينَ هُمُۥ فِي خَوۡضࣲ يَلۡعَبُونَ"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "يَوۡمَ يُدَعُّونَ إِلَىٰ نَارِ جَهَنَّمَ دَعًّا"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "هَٰذِهِ ٱلنَّارُ ٱلَّتِي كُنتُمُۥ بِهَا تُكَذِّبُونَ"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "أَفَسِحۡرٌ هَٰذَا أَمۡ أَنتُمُۥ لَا تُبۡصِرُونَ"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "ٱصۡلَوۡهَا فَٱصۡبِرُواْ أَوۡ لَا تَصۡبِرُواْ سَوَآءٌ عَلَيۡكُمُۥۖ إِنَّمَا تُجۡزَوۡنَ مَا كُنتُمُۥ تَعۡمَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "إِنَّ ٱلۡمُتَّقِينَ فِي جَنَّٰتࣲ وَنَعِيمࣲ‏"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "فَٰكِهِينَ بِمَا ءَاتَىٰهُمُۥ رَبُّهُمُۥ وَوَقَىٰهُمُۥ رَبُّهُمُۥ عَذَابَ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "كُلُواْ وَٱشۡرَبُواْ هَنِيٓـَٔۢا بِمَا كُنتُمُۥ تَعۡمَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "مُتَّكِـِٔينَ عَلَىٰ سُرُرࣲ مَّصۡفُوفَةࣲۖ وَزَوَّجۡنَٰهُمُۥ بِحُورٍ عِينࣲ‏"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "وَٱلَّذِينَ ءَامَنُواْ وَٱتَّبَعَتۡهُمُۥ ذُرِّيَّتُهُمُۥ بِإِيمَٰنٍ أَلۡحَقۡنَا بِهِمُۥ ذُرِّيَّتَهُمُۥ وَمَا أَلِتۡنَٰهُمُۥ مِنۡ عَمَلِهِمُۥ مِن شَيۡءࣲۚ كُلُّ ٱمۡرِيِٕۭ بِمَا كَسَبَ رَهِينࣱ‏"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "وَأَمۡدَدۡنَٰهُمُۥ بِفَٰكِهَةࣲ وَلَحۡمࣲ مِّمَّا يَشۡتَهُونَ"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "يَتَنَٰزَعُونَ فِيهَا كَأۡسࣰ ا لَّا لَغۡوَ فِيهَا وَلَا تَأۡثِيمَ"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "۞وَيَطُوفُ عَلَيۡهِمُۥ غِلۡمَانࣱ لَّهُمُۥ كَأَنَّهُمُۥ لُؤۡلُؤࣱ مَّكۡنُونࣱ‏"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُواْ إِنَّا كُنَّا قَبۡلُ فِي أَهۡلِنَا مُشۡفِقِينَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ ٱللَّهُ عَلَيۡنَا وَوَقَىٰنَا عَذَابَ ٱلسَّمُومِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "إِنَّا كُنَّا مِن قَبۡلُ نَدۡعُوهُۥۖ إِنَّهُۥ هُوَ ٱلۡبَرُّ ٱلرَّحِيمُ"
        }
    ]
}