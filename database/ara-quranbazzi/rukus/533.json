{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "وَٱلشَّمۡسِ وَضُحَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "وَٱلۡقَمَرِ إِذَا تَلَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "وَٱلنَّهَارِ إِذَا جَلَّىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "وَٱلَّيۡلِ إِذَا يَغۡشَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "وَٱلسَّمَآءِ وَمَا بَنَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "وَٱلۡأَرۡضِ وَمَا طَحَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "وَنَفۡسࣲ وَمَا سَوَّىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "فَأَلۡهَمَهَا فُجُورَهَا وَتَقۡوَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "قَدۡ أَفۡلَحَ مَن زَكَّىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "وَقَدۡ خَابَ مَن دَسَّىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "كَذَّبَتۡ ثَمُودُ بِطَغۡوَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "إِذِ ٱنۢبَعَثَ أَشۡقَىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "فَقَالَ لَهُمُۥ رَسُولُ ٱللَّهِ نَاقَةَ ٱللَّهِ وَسُقۡيَٰهَا"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "فَكَذَّبُوهُۥ فَعَقَرُوهَا فَدَمۡدَمَ عَلَيۡهِمُۥ رَبُّهُمُۥ بِذَنۢبِهِمُۥ فَسَوَّىٰهَا"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "وَلَا يَخَافُ عُقۡبَٰهَا"
        }
    ]
}