{
    "maqras": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "۞فَنَبَذۡنَٰهُۥ بِٱلۡعَرَآءِ وَهُوَ سَقِيمࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وَأَنۢبَتۡنَا عَلَيۡهِۦ شَجَرَةࣰ مِّن يَقۡطِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وَأَرۡسَلۡنَٰهُۥ إِلَىٰ مِاْئَةِ أَلۡفٍ أَوۡ يَزِيدُونَ"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فَـَٔامَنُواْ فَمَتَّعۡنَٰهُمُۥ إِلَىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فَٱسۡتَفۡتِهِمُۥ أَلِرَبِّكَ ٱلۡبَنَاتُ وَلَهُمُ ٱلۡبَنُونَ"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "أَمۡ خَلَقۡنَا ٱلۡمَلَٰٓئِكَةَ إِنَٰثࣰ ا وَهُمُۥ شَٰهِدُونَ"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "أَلَا إِنَّهُمُۥ مِنۡ إِفۡكِهِمُۥ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "وَلَدَ ٱللَّهُ وَإِنَّهُمُۥ لَكَٰذِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "أَصۡطَفَى ٱلۡبَنَاتِ عَلَى ٱلۡبَنِينَ"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "مَا لَكُمُۥ كَيۡفَ تَحۡكُمُونَ"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "أَفَلَا تَذَّكَّرُونَ"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "أَمۡ لَكُمُۥ سُلۡطَٰنࣱ مُّبِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فَأۡتُواْ بِكِتَٰبِكُمُۥ إِن كُنتُمُۥ صَٰدِقِينَ"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وَجَعَلُواْ بَيۡنَهُۥ وَبَيۡنَ ٱلۡجِنَّةِ نَسَبࣰ اۚ وَلَقَدۡ عَلِمَتِ ٱلۡجِنَّةُ إِنَّهُمُۥ لَمُحۡضَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سُبۡحَٰنَ ٱللَّهِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فَإِنَّكُمُۥ وَمَا تَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مَا أَنتُمُۥ عَلَيۡهِۦ بِفَٰتِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "إِلَّا مَنۡ هُوَ صَالِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وَمَا مِنَّا إِلَّا لَهُۥ مَقَامࣱ مَّعۡلُومࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وَإِنَّا لَنَحۡنُ ٱلصَّآفُّونَ"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وَإِنَّا لَنَحۡنُ ٱلۡمُسَبِّحُونَ"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وَإِن كَانُواْ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لَوۡ أَنَّ عِندَنَا ذِكۡرࣰ ا مِّنَ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لَكُنَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فَكَفَرُواْ بِهِۦۖ فَسَوۡفَ يَعۡلَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "وَلَقَدۡ سَبَقَتۡ كَلِمَتُنَا لِعِبَادِنَا ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "إِنَّهُمُۥ لَهُمُ ٱلۡمَنصُورُونَ"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وَإِنَّ جُندَنَا لَهُمُ ٱلۡغَٰلِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فَتَوَلَّ عَنۡهُمُۥ حَتَّىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وَأَبۡصِرۡهُمُۥ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "أَفَبِعَذَابِنَا يَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فَإِذَا نَزَلَ بِسَاحَتِهِمُۥ فَسَآءَ صَبَاحُ ٱلۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وَتَوَلَّ عَنۡهُمُۥ حَتَّىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وَأَبۡصِرۡ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سُبۡحَٰنَ رَبِّكَ رَبِّ ٱلۡعِزَّةِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وَسَلَٰمٌ عَلَى ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وَٱلۡحَمۡدُ لِلَّهِ رَبِّ ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "صٓۚ وَٱلۡقُرَانِ ذِي ٱلذِّكۡرِ"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "بَلِ ٱلَّذِينَ كَفَرُواْ فِي عِزَّةࣲ وَشِقَاقࣲ‏"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "كَمۡ أَهۡلَكۡنَا مِن قَبۡلِهِمُۥ مِن قَرۡنࣲ فَنَادَواْ وَّلَاتَ حِينَ مَنَاصࣲ‏"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "وَعَجِبُواْ أَن جَآءَهُمُۥ مُنذِرࣱ مِّنۡهُمُۥۖ وَقَالَ ٱلۡكَٰفِرُونَ هَٰذَا سَٰحِرࣱ كَذَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "أَجَعَلَ ٱلۡأٓلِهَةَ إِلَٰهࣰ ا وَٰحِدًاۖ إِنَّ هَٰذَا لَشَيۡءٌ عُجَابࣱ‏"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "وَٱنطَلَقَ ٱلۡمَلَأُ مِنۡهُمُۥ أَنِ ٱمۡشُواْ وَٱصۡبِرُواْ عَلَىٰ ءَالِهَتِكُمُۥۖ إِنَّ هَٰذَا لَشَيۡءࣱ يُرَادُ"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "مَا سَمِعۡنَا بِهَٰذَا فِي ٱلۡمِلَّةِ ٱلۡأٓخِرَةِ إِنۡ هَٰذَا إِلَّا ٱخۡتِلَٰقٌ"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "أَ۟نزِلَ عَلَيۡهِ ٱلذِّكۡرُ مِنۢ بَيۡنِنَاۚ بَلۡ هُمُۥ فِي شَكࣲّ مِّن ذِكۡرِيۚ بَل لَّمَّا يَذُوقُواْ عَذَابِ"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "أَمۡ عِندَهُمُۥ خَزَآئِنُ رَحۡمَةِ رَبِّكَ ٱلۡعَزِيزِ ٱلۡوَهَّابِ"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "أَمۡ لَهُمُۥ مُلۡكُ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَاۖ فَلۡيَرۡتَقُواْ فِي ٱلۡأَسۡبَٰبِ"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "جُندࣱ مَّا هُنَالِكَ مَهۡزُومࣱ مِّنَ ٱلۡأَحۡزَابِ"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "كَذَّبَتۡ قَبۡلَهُمُۥ قَوۡمُ نُوحࣲ وَعَادࣱ وَفِرۡعَوۡنُ ذُو ٱلۡأَوۡتَادِ"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "وَثَمُودُ وَقَوۡمُ لُوطࣲ وَأَصۡحَٰبُ لَيۡكَةَۚ أُوْلَٰٓئِكَ ٱلۡأَحۡزَابُ"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "إِن كُلٌّ إِلَّا كَذَّبَ ٱلرُّسُلَ فَحَقَّ عِقَابِ"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "وَمَا يَنظُرُ هَٰؤُلَآ۟ إِلَّا صَيۡحَةࣰ وَٰحِدَةࣰ مَّا لَهَا مِن فَوَاقࣲ‏"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "وَقَالُواْ رَبَّنَا عَجِّل لَّنَا قِطَّنَا قَبۡلَ يَوۡمِ ٱلۡحِسَابِ"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "ٱصۡبِرۡ عَلَىٰ مَا يَقُولُونَ وَٱذۡكُرۡ عَبۡدَنَا دَاوُۥدَ ذَا ٱلۡأَيۡدِۖ إِنَّهُۥ أَوَّابٌ"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "إِنَّا سَخَّرۡنَا ٱلۡجِبَالَ مَعَهُۥ يُسَبِّحۡنَ بِٱلۡعَشِيِّ وَٱلۡإِشۡرَاقِ"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "وَٱلطَّيۡرَ مَحۡشُورَةࣰۖ كُلࣱّ لَّهُۥ أَوَّابࣱ‏"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "وَشَدَدۡنَا مُلۡكَهُۥ وَءَاتَيۡنَٰهُ ٱلۡحِكۡمَةَ وَفَصۡلَ ٱلۡخِطَابِ"
        }
    ]
}