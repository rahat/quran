{
    "maqras": [
        {
            "chapter": 52,
            "verse": 24,
            "text": "۞وَيَطُوفُ عَلَيۡهِمُۥ غِلۡمَانࣱ لَّهُمُۥ كَأَنَّهُمُۥ لُؤۡلُؤࣱ مَّكۡنُونࣱ‏"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُواْ إِنَّا كُنَّا قَبۡلُ فِي أَهۡلِنَا مُشۡفِقِينَ"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ ٱللَّهُ عَلَيۡنَا وَوَقَىٰنَا عَذَابَ ٱلسَّمُومِ"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "إِنَّا كُنَّا مِن قَبۡلُ نَدۡعُوهُۥۖ إِنَّهُۥ هُوَ ٱلۡبَرُّ ٱلرَّحِيمُ"
        },
        {
            "chapter": 52,
            "verse": 29,
            "text": "فَذَكِّرۡ فَمَا أَنتَ بِنِعۡمَتِ رَبِّكَ بِكَاهِنࣲ وَلَا مَجۡنُونٍ"
        },
        {
            "chapter": 52,
            "verse": 30,
            "text": "أَمۡ يَقُولُونَ شَاعِرࣱ نَّتَرَبَّصُ بِهِۦ رَيۡبَ ٱلۡمَنُونِ"
        },
        {
            "chapter": 52,
            "verse": 31,
            "text": "قُلۡ تَرَبَّصُواْ فَإِنِّي مَعَكُمُۥ مِنَ ٱلۡمُتَرَبِّصِينَ"
        },
        {
            "chapter": 52,
            "verse": 32,
            "text": "أَمۡ تَأۡمُرُهُمُۥ أَحۡلَٰمُهُمُۥ بِهَٰذَاۚ أَمۡ هُمُۥ قَوۡمࣱ طَاغُونَ"
        },
        {
            "chapter": 52,
            "verse": 33,
            "text": "أَمۡ يَقُولُونَ تَقَوَّلَهُۥۚ بَل لَّا يُؤۡمِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 34,
            "text": "فَلۡيَأۡتُواْ بِحَدِيثࣲ مِّثۡلِهِۦ إِن كَانُواْ صَٰدِقِينَ"
        },
        {
            "chapter": 52,
            "verse": 35,
            "text": "أَمۡ خُلِقُواْ مِنۡ غَيۡرِ شَيۡءٍ أَمۡ هُمُ ٱلۡخَٰلِقُونَ"
        },
        {
            "chapter": 52,
            "verse": 36,
            "text": "أَمۡ خَلَقُواْ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضَۚ بَل لَّا يُوقِنُونَ"
        },
        {
            "chapter": 52,
            "verse": 37,
            "text": "أَمۡ عِندَهُمُۥ خَزَآئِنُ رَبِّكَ أَمۡ هُمُ ٱلۡمُصَيۡطِرُونَ"
        },
        {
            "chapter": 52,
            "verse": 38,
            "text": "أَمۡ لَهُمُۥ سُلَّمࣱ يَسۡتَمِعُونَ فِيهِۦۖ فَلۡيَأۡتِ مُسۡتَمِعُهُمُۥ بِسُلۡطَٰنࣲ مُّبِينٍ"
        },
        {
            "chapter": 52,
            "verse": 39,
            "text": "أَمۡ لَهُ ٱلۡبَنَٰتُ وَلَكُمُ ٱلۡبَنُونَ"
        },
        {
            "chapter": 52,
            "verse": 40,
            "text": "أَمۡ تَسۡـَٔلُهُمُۥ أَجۡرࣰ ا فَهُمُۥ مِن مَّغۡرَمࣲ مُّثۡقَلُونَ"
        },
        {
            "chapter": 52,
            "verse": 41,
            "text": "أَمۡ عِندَهُمُ ٱلۡغَيۡبُ فَهُمُۥ يَكۡتُبُونَ"
        },
        {
            "chapter": 52,
            "verse": 42,
            "text": "أَمۡ يُرِيدُونَ كَيۡدࣰ اۖ فَٱلَّذِينَ كَفَرُواْ هُمُ ٱلۡمَكِيدُونَ"
        },
        {
            "chapter": 52,
            "verse": 43,
            "text": "أَمۡ لَهُمُۥ إِلَٰهٌ غَيۡرُ ٱللَّهِۚ سُبۡحَٰنَ ٱللَّهِ عَمَّا يُشۡرِكُونَ"
        },
        {
            "chapter": 52,
            "verse": 44,
            "text": "وَإِن يَرَوۡاْ كِسۡفࣰ ا مِّنَ ٱلسَّمَآءِ سَاقِطࣰ ا يَقُولُواْ سَحَابࣱ مَّرۡكُومࣱ‏"
        },
        {
            "chapter": 52,
            "verse": 45,
            "text": "فَذَرۡهُمُۥ حَتَّىٰ يُلَٰقُواْ يَوۡمَهُمُ ٱلَّذِي فِيهِۦ يَصۡعَقُونَ"
        },
        {
            "chapter": 52,
            "verse": 46,
            "text": "يَوۡمَ لَا يُغۡنِي عَنۡهُمُۥ كَيۡدُهُمُۥ شَيۡـࣰٔ ا وَلَا هُمُۥ يُنصَرُونَ"
        },
        {
            "chapter": 52,
            "verse": 47,
            "text": "وَإِنَّ لِلَّذِينَ ظَلَمُواْ عَذَابࣰ ا دُونَ ذَٰلِكَ وَلَٰكِنَّ أَكۡثَرَهُمُۥ لَا يَعۡلَمُونَ"
        },
        {
            "chapter": 52,
            "verse": 48,
            "text": "وَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ فَإِنَّكَ بِأَعۡيُنِنَاۖ وَسَبِّحۡ بِحَمۡدِ رَبِّكَ حِينَ تَقُومُ"
        },
        {
            "chapter": 52,
            "verse": 49,
            "text": "وَمِنَ ٱلَّيۡلِ فَسَبِّحۡهُۥ وَإِدۡبَٰرَ ٱلنُّجُومِ"
        },
        {
            "chapter": 53,
            "verse": 1,
            "text": "وَٱلنَّجۡمِ إِذَا هَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "مَا ضَلَّ صَاحِبُكُمُۥ وَمَا غَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "وَمَا يَنطِقُ عَنِ ٱلۡهَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "إِنۡ هُوَ إِلَّا وَحۡيࣱ يُوحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "عَلَّمَهُۥ شَدِيدُ ٱلۡقُوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "ذُو مِرَّةࣲ فَٱسۡتَوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "وَهُوَ بِٱلۡأُفُقِ ٱلۡأَعۡلَىٰ"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "ثُمَّ دَنَا فَتَدَلَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "فَكَانَ قَابَ قَوۡسَيۡنِ أَوۡ أَدۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "فَأَوۡحَىٰ إِلَىٰ عَبۡدِهِۦ مَا أَوۡحَىٰ"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "مَا كَذَبَ ٱلۡفُؤَادُ مَا رَأَىٰ"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "أَفَتُمَٰرُونَهُۥ عَلَىٰ مَا يَرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "وَلَقَدۡ رَءَاهُۥ نَزۡلَةً أُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "عِندَ سِدۡرَةِ ٱلۡمُنتَهَىٰ"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "عِندَهَا جَنَّةُ ٱلۡمَأۡوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "إِذۡ يَغۡشَى ٱلسِّدۡرَةَ مَا يَغۡشَىٰ"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "مَا زَاغَ ٱلۡبَصَرُ وَمَا طَغَىٰ"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "لَقَدۡ رَأَىٰ مِنۡ ءَايَٰتِ رَبِّهِ ٱلۡكُبۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "أَفَرَءَيۡتُمُ ٱللَّٰتَ وَٱلۡعُزَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "وَمَنَوٰٓءَةَ ٱلثَّالِثَةَ ٱلۡأُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "أَلَكُمُ ٱلذَّكَرُ وَلَهُ ٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "تِلۡكَ إِذࣰ ا قِسۡمَةࣱ ضِئۡزَىٰ"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "إِنۡ هِيَ إِلَّا أَسۡمَآءࣱ سَمَّيۡتُمُوهَا أَنتُمُۥ وَءَابَآؤُكُمُۥ مَا أَنزَلَ ٱللَّهُ بِهَا مِن سُلۡطَٰنٍۚ إِن يَتَّبِعُونَ إِلَّا ٱلظَّنَّ وَمَا تَهۡوَى ٱلۡأَنفُسُۖ وَلَقَدۡ جَآءَهُمُۥ مِن رَّبِّهِمُ ٱلۡهُدَىٰ"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "أَمۡ لِلۡإِنسَٰنِ مَا تَمَنَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "فَلِلَّهِ ٱلۡأٓخِرَةُ وَٱلۡأُولَىٰ"
        }
    ]
}