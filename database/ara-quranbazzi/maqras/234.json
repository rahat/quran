{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "عَبَسَ وَتَوَلَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "أَن جَآءَهُ ٱلۡأَعۡمَىٰ"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "وَمَا يُدۡرِيكَ لَعَلَّهُۥ يَزَّكَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "أَوۡ يَذَّكَّرُ فَتَنفَعُهُ ٱلذِّكۡرَىٰ"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "أَمَّا مَنِ ٱسۡتَغۡنَىٰ"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "فَأَنتَ لَهُۥ تَصَّدَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "وَمَا عَلَيۡكَ أَلَّا يَزَّكَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "وَأَمَّا مَن جَآءَكَ يَسۡعَىٰ"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "وَهُوَ يَخۡشَىٰ"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "فَأَنتَ عَنۡهُۥٓ تَّلَهَّىٰ"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "كَلَّا إِنَّهَا تَذۡكِرَةࣱ‏"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "فَمَن شَآءَ ذَكَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "فِي صُحُفࣲ مُّكَرَّمَةࣲ‏"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "مَّرۡفُوعَةࣲ مُّطَهَّرَةِۭ"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "بِأَيۡدِي سَفَرَةࣲ‏"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "كِرَامِۭ بَرَرَةࣲ‏"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "قُتِلَ ٱلۡإِنسَٰنُ مَا أَكۡفَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "مِنۡ أَيِّ شَيۡءٍ خَلَقَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "مِن نُّطۡفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "ثُمَّ أَمَاتَهُۥ فَأَقۡبَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "ثُمَّ إِذَا شَا أَنشَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "كَلَّا لَمَّا يَقۡضِ مَا أَمَرَهُۥ"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "فَلۡيَنظُرِ ٱلۡإِنسَٰنُ إِلَىٰ طَعَامِهِۦ"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "إِنَّا صَبَبۡنَا ٱلۡمَآءَ صَبࣰّ ا"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "ثُمَّ شَقَقۡنَا ٱلۡأَرۡضَ شَقࣰّ ا"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "فَأَنۢبَتۡنَا فِيهَا حَبࣰّ ا"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "وَعِنَبࣰ ا وَقَضۡبࣰ ا"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "وَزَيۡتُونࣰ ا وَنَخۡلࣰ ا"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "وَحَدَآئِقَ غُلۡبࣰ ا"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "وَفَٰكِهَةࣰ وَأَبࣰّ ا"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "مَّتَٰعࣰ ا لَّكُمُۥ وَلِأَنۡعَٰمِكُمُۥ"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "يَوۡمَ يَفِرُّ ٱلۡمَرۡءُ مِنۡ أَخِيهِۦ"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "وَأُمِّهِۦ وَأَبِيهِۦ"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "وَصَٰحِبَتِهِۦ وَبَنِيهِۦ"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "لِكُلِّ ٱمۡرِيࣲٕ مِّنۡهُمُۥ يَوۡمَئِذࣲ شَأۡنࣱ يُغۡنِيهِۦ"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "وُجُوهࣱ يَوۡمَئِذࣲ مُّسۡفِرَةࣱ‏"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ضَاحِكَةࣱ مُّسۡتَبۡشِرَةࣱ‏"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "وَوُجُوهࣱ يَوۡمَئِذٍ عَلَيۡهَا غَبَرَةࣱ‏"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تَرۡهَقُهَا قَتَرَةٌ"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "أُوْلَٰٓئِكَ هُمُ ٱلۡكَفَرَةُ ٱلۡفَجَرَةُ"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "إِذَا ٱلشَّمۡسُ كُوِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "وَإِذَا ٱلۡجِبَالُ سُيِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "وَإِذَا ٱلۡبِحَارُ سُجِرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "بِأَيِّ ذَنۢبࣲ قُتِلَتۡ"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "وَإِذَا ٱلصُّحُفُ نُشِّرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "وَإِذَا ٱلسَّمَآءُ كُشِطَتۡ"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "وَإِذَا ٱلۡجَحِيمُ سُعِرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "عَلِمَتۡ نَفۡسࣱ مَّا أَحۡضَرَتۡ"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "فَلَا أُقۡسِمُ بِٱلۡخُنَّسِ"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ٱلۡجَوَارِ ٱلۡكُنَّسِ"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "وَٱلَّيۡلِ إِذَا عَسۡعَسَ"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "وَٱلصُّبۡحِ إِذَا تَنَفَّسَ"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "إِنَّهُۥ لَقَوۡلُ رَسُولࣲ كَرِيمࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "ذِي قُوَّةٍ عِندَ ذِي ٱلۡعَرۡشِ مَكِينࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "مُّطَاعࣲ ثَمَّ أَمِينࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "وَمَا صَاحِبُكُمُۥ بِمَجۡنُونࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "وَلَقَدۡ رَءَاهُۥ بِٱلۡأُفُقِ ٱلۡمُبِينِ"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "وَمَا هُوَ عَلَى ٱلۡغَيۡبِ بِضظَنِينࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "وَمَا هُوَ بِقَوۡلِ شَيۡطَٰنࣲ رَّجِيمࣲ‏"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "فَأَيۡنَ تَذۡهَبُونَ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "إِنۡ هُوَ إِلَّا ذِكۡرࣱ لِّلۡعَٰلَمِينَ"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "لِمَن شَآءَ مِنكُمُۥ أَن يَسۡتَقِيمَ"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "وَمَا تَشَآءُونَ إِلَّا أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلۡعَٰلَمِينَ"
        }
    ]
}