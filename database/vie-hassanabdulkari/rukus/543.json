{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Al-Qari'ah"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Al-Qari'ah là gì"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Và điều gì cho Ngươi (Muhammad) biết Al-Qari'ah là gì"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Đó là Ngày mà nhân loại sẽ như bươm bướm bay tán loạn"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Và những quả núi sẽ (bắn tung) như cụm lông cừu được chải ra"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Bởi thế, đối với ai mà bàn cân (chứa việc thiện tốt và ngoan đạo) nặng"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "Thì sẽ hưởng một đời sống hài lòng và thỏa nguyện"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Và đối với ai mà bàn cân (chứa việc thiện tốt và ngoan đạo) nhẹ"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Thì nhà ở của y sẽ là Hawiyah"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Và điều gì cho Ngươi biết Hawiyah là gì"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "(Đó là) Lửa ngọn cháy dữ dội"
        }
    ]
}