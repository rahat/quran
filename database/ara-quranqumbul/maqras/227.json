{
    "maqras": [
        {
            "chapter": 69,
            "verse": 1,
            "text": "ٱلۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 2,
            "text": "مَا ٱلۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 3,
            "text": "وَمَا أَدۡرَىٰكَ مَا ٱلۡحَآقَّةُ"
        },
        {
            "chapter": 69,
            "verse": 4,
            "text": "كَذَّبَتۡ ثَمُودُ وَعَادُۢ بِٱلۡقَارِعَةِ"
        },
        {
            "chapter": 69,
            "verse": 5,
            "text": "فَأَمَّا ثَمُودُ فَأُهۡلِكُواْ بِٱلطَّاغِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 6,
            "text": "وَأَمَّا عَادࣱ فَأُهۡلِكُواْ بِرِيحࣲ صَرۡصَرٍ عَاتِيَةࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 7,
            "text": "سَخَّرَهَا عَلَيۡهِمُۥ سَبۡعَ لَيَالࣲ وَثَمَٰنِيَةَ أَيَّامٍ حُسُومࣰ اۖ فَتَرَى ٱلۡقَوۡمَ فِيهَا صَرۡعَىٰ كَأَنَّهُمُۥ أَعۡجَازُ نَخۡلٍ خَاوِيَةࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 8,
            "text": "فَهَلۡ تَرَىٰ لَهُمُۥ مِنۢ بَاقِيَةࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 9,
            "text": "وَجَآءَ فِرۡعَوۡنُ وَمَن قَبۡلَهُۥ وَٱلۡمُؤۡتَفِكَٰتُ بِٱلۡخَاطِئَةِ"
        },
        {
            "chapter": 69,
            "verse": 10,
            "text": "فَعَصَوۡاْ رَسُولَ رَبِّهِمُۥ فَأَخَذَهُمُۥ أَخۡذَةࣰ رَّابِيَةً"
        },
        {
            "chapter": 69,
            "verse": 11,
            "text": "إِنَّا لَمَّا طَغَا ٱلۡمَآءُ حَمَلۡنَٰكُمُۥ فِي ٱلۡجَارِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 12,
            "text": "لِنَجۡعَلَهَا لَكُمُۥ تَذۡكِرَةࣰ وَتَعِيَهَا أُذُنࣱ وَٰعِيَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 13,
            "text": "فَإِذَا نُفِخَ فِي ٱلصُّورِ نَفۡخَةࣱ وَٰحِدَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 14,
            "text": "وَحُمِلَتِ ٱلۡأَرۡضُ وَٱلۡجِبَالُ فَدُكَّتَا دَكَّةࣰ وَٰحِدَةࣰ‏"
        },
        {
            "chapter": 69,
            "verse": 15,
            "text": "فَيَوۡمَئِذࣲ وَقَعَتِ ٱلۡوَاقِعَةُ"
        },
        {
            "chapter": 69,
            "verse": 16,
            "text": "وَٱنشَقَّتِ ٱلسَّمَآءُ فَهِيَ يَوۡمَئِذࣲ وَاهِيَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 17,
            "text": "وَٱلۡمَلَكُ عَلَىٰ أَرۡجَآئِهَاۚ وَيَحۡمِلُ عَرۡشَ رَبِّكَ فَوۡقَهُمُۥ يَوۡمَئِذࣲ ثَمَٰنِيَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 18,
            "text": "يَوۡمَئِذࣲ تُعۡرَضُونَ لَا تَخۡفَىٰ مِنكُمُۥ خَافِيَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 19,
            "text": "فَأَمَّا مَنۡ أُوتِيَ كِتَٰبَهُۥ بِيَمِينِهِۦ فَيَقُولُ هَآؤُمُ ٱقۡرَءُواْ كِتَٰبِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 20,
            "text": "إِنِّي ظَنَنتُ أَنِّي مُلَٰقٍ حِسَابِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 21,
            "text": "فَهُوَ فِي عِيشَةࣲ رَّاضِيَةࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 22,
            "text": "فِي جَنَّةٍ عَالِيَةࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 23,
            "text": "قُطُوفُهَا دَانِيَةࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 24,
            "text": "كُلُواْ وَٱشۡرَبُواْ هَنِيٓـَٔۢا بِمَا أَسۡلَفۡتُمُۥ فِي ٱلۡأَيَّامِ ٱلۡخَالِيَةِ"
        },
        {
            "chapter": 69,
            "verse": 25,
            "text": "وَأَمَّا مَنۡ أُوتِيَ كِتَٰبَهُۥ بِشِمَالِهِۦ فَيَقُولُ يَٰلَيۡتَنِي لَمۡ أُوتَ كِتَٰبِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 26,
            "text": "وَلَمۡ أَدۡرِ مَا حِسَابِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 27,
            "text": "يَٰلَيۡتَهَا كَانَتِ ٱلۡقَاضِيَةَ"
        },
        {
            "chapter": 69,
            "verse": 28,
            "text": "مَا أَغۡنَىٰ عَنِّي مَالِيَهۡۜ"
        },
        {
            "chapter": 69,
            "verse": 29,
            "text": "هَلَكَ عَنِّي سُلۡطَٰنِيَهۡ"
        },
        {
            "chapter": 69,
            "verse": 30,
            "text": "خُذُوهُۥ فَغُلُّوهُۥ"
        },
        {
            "chapter": 69,
            "verse": 31,
            "text": "ثُمَّ ٱلۡجَحِيمَ صَلُّوهُۥ"
        },
        {
            "chapter": 69,
            "verse": 32,
            "text": "ثُمَّ فِي سِلۡسِلَةࣲ ذَرۡعُهَا سَبۡعُونَ ذِرَاعࣰ ا فَٱسۡلُكُوهُۥ"
        },
        {
            "chapter": 69,
            "verse": 33,
            "text": "إِنَّهُۥ كَانَ لَا يُؤۡمِنُ بِٱللَّهِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 69,
            "verse": 34,
            "text": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلۡمِسۡكِينِ"
        },
        {
            "chapter": 69,
            "verse": 35,
            "text": "فَلَيۡسَ لَهُ ٱلۡيَوۡمَ هَٰهُنَا حَمِيمࣱ‏"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "وَلَا طَعَامٌ إِلَّا مِنۡ غِسۡلِينࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "لَّا يَأۡكُلُهُۥ إِلَّا ٱلۡخَٰطِـُٔونَ"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "فَلَا أُقۡسِمُ بِمَا تُبۡصِرُونَ"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "وَمَا لَا تُبۡصِرُونَ"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "إِنَّهُۥ لَقَوۡلُ رَسُولࣲ كَرِيمࣲ‏"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "وَمَا هُوَ بِقَوۡلِ شَاعِرࣲۚ قَلِيلࣰ ا مَّا يُؤۡمِنُونَ"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "وَلَا بِقَوۡلِ كَاهِنࣲۚ قَلِيلࣰ ا مَّا يَذَّكَّرُونَ"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "تَنزِيلࣱ مِّن رَّبِّ ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "وَلَوۡ تَقَوَّلَ عَلَيۡنَا بَعۡضَ ٱلۡأَقَاوِيلِ"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "لَأَخَذۡنَا مِنۡهُۥ بِٱلۡيَمِينِ"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "ثُمَّ لَقَطَعۡنَا مِنۡهُ ٱلۡوَتِينَ"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "فَمَا مِنكُمُۥ مِنۡ أَحَدٍ عَنۡهُۥ حَٰجِزِينَ"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "وَإِنَّهُۥ لَتَذۡكِرَةࣱ لِّلۡمُتَّقِينَ"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "وَإِنَّا لَنَعۡلَمُ أَنَّ مِنكُمُۥ مُكَذِّبِينَ"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "وَإِنَّهُۥ لَحَسۡرَةٌ عَلَى ٱلۡكَٰفِرِينَ"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "وَإِنَّهُۥ لَحَقُّ ٱلۡيَقِينِ"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "فَسَبِّحۡ بِٱسۡمِ رَبِّكَ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَأَلَ سَآئِلُۢ بِعَذَابࣲ وَاقِعࣲ‏"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكَٰفِرِينَ لَيۡسَ لَهُۥ دَافِعࣱ‏"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ ٱللَّهِ ذِي ٱلۡمَعَارِجِ"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ ٱلۡمَلَٰٓئِكَةُ وَٱلرُّوحُ إِلَيۡهِۦ فِي يَوۡمࣲ كَانَ مِقۡدَارُهُۥ خَمۡسِينَ أَلۡفَ سَنَةࣲ‏"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَٱصۡبِرۡ صَبۡرࣰ ا جَمِيلًا"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "إِنَّهُمُۥ يَرَوۡنَهُۥ بَعِيدࣰ ا"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَنَرَىٰهُۥ قَرِيبࣰ ا"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "يَوۡمَ تَكُونُ ٱلسَّمَآءُ كَٱلۡمُهۡلِ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيمٌ حَمِيمࣰ ا"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يُبَصَّرُونَهُمُۥۚ يَوَدُّ ٱلۡمُجۡرِمُ لَوۡ يَفۡتَدِي مِنۡ عَذَابِ يَوۡمِئِذِۭ بِبَنِيهِۦ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَٰحِبَتِهِۦ وَأَخِيهِۦ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِيلَتِهِ ٱلَّتِي تُـٔۡوِيهِۦ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَن فِي ٱلۡأَرۡضِ جَمِيعࣰ ا ثُمَّ يُنجِيهِۦ"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّاۖ إِنَّهَا لَظَىٰ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةࣱ لِّلشَّوَىٰ"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُواْ مَنۡ أَدۡبَرَ وَتَوَلَّىٰ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَأَوۡعَىٰ"
        }
    ]
}