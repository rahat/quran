{
    "maqras": [
        {
            "chapter": 53,
            "verse": 26,
            "text": "۞وَكَم مِّن مَّلَكࣲ فِي ٱلسَّمَٰوَٰتِ لَا تُغۡنِي شَفَٰعَتُهُمُۥ شَيۡـًٔا إِلَّا مِنۢ بَعۡدِ أَن يَأۡذَنَ ٱللَّهُ لِمَن يَشَآءُ وَيَرۡضَىٰ"
        },
        {
            "chapter": 53,
            "verse": 27,
            "text": "إِنَّ ٱلَّذِينَ لَا يُؤۡمِنُونَ بِٱلۡأٓخِرَةِ لَيُسَمُّونَ ٱلۡمَلَٰٓئِكَةَ تَسۡمِيَةَ ٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 28,
            "text": "وَمَا لَهُمُۥ بِهِۦ مِنۡ عِلۡمٍۖ إِن يَتَّبِعُونَ إِلَّا ٱلظَّنَّۖ وَإِنَّ ٱلظَّنَّ لَا يُغۡنِي مِنَ ٱلۡحَقِّ شَيۡـࣰٔ ا"
        },
        {
            "chapter": 53,
            "verse": 29,
            "text": "فَأَعۡرِضۡ عَن مَّن تَوَلَّىٰ عَن ذِكۡرِنَا وَلَمۡ يُرِدۡ إِلَّا ٱلۡحَيَوٰةَ ٱلدُّنۡيَا"
        },
        {
            "chapter": 53,
            "verse": 30,
            "text": "ذَٰلِكَ مَبۡلَغُهُمُۥ مِنَ ٱلۡعِلۡمِۚ إِنَّ رَبَّكَ هُوَ أَعۡلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦ وَهُوَ أَعۡلَمُ بِمَنِ ٱهۡتَدَىٰ"
        },
        {
            "chapter": 53,
            "verse": 31,
            "text": "وَلِلَّهِ مَا فِي ٱلسَّمَٰوَٰتِ وَمَا فِي ٱلۡأَرۡضِ لِيَجۡزِيَ ٱلَّذِينَ أَسَٰٓـُٔواْ بِمَا عَمِلُواْ وَيَجۡزِيَ ٱلَّذِينَ أَحۡسَنُواْ بِٱلۡحُسۡنَى"
        },
        {
            "chapter": 53,
            "verse": 32,
            "text": "ٱلَّذِينَ يَجۡتَنِبُونَ كَبَٰٓئِرَ ٱلۡإِثۡمِ وَٱلۡفَوَٰحِشَ إِلَّا ٱللَّمَمَۚ إِنَّ رَبَّكَ وَٰسِعُ ٱلۡمَغۡفِرَةِۚ هُوَ أَعۡلَمُ بِكُمُۥ إِذۡ أَنشَأَكُمُۥ مِنَ ٱلۡأَرۡضِ وَإِذۡ أَنتُمُۥ أَجِنَّةࣱ فِي بُطُونِ أُمَّهَٰتِكُمُۥۖ فَلَا تُزَكُّواْ أَنفُسَكُمُۥۖ هُوَ أَعۡلَمُ بِمَنِ ٱتَّقَىٰ"
        },
        {
            "chapter": 53,
            "verse": 33,
            "text": "أَفَرَءَيۡتَ ٱلَّذِي تَوَلَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "وَأَعۡطَىٰ قَلِيلࣰ ا وَأَكۡدَىٰ"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "أَعِندَهُۥ عِلۡمُ ٱلۡغَيۡبِ فَهُوَ يَرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "أَمۡ لَمۡ يُنَبَّأۡ بِمَا فِي صُحُفِ مُوسَىٰ"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "وَإِبۡرَٰهِيمَ ٱلَّذِي وَفَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "أَلَّا تَزِرُ وَازِرَةࣱ وِزۡرَ أُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "وَأَن لَّيۡسَ لِلۡإِنسَٰنِ إِلَّا مَا سَعَىٰ"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "وَأَنَّ سَعۡيَهُۥ سَوۡفَ يُرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "ثُمَّ يُجۡزَىٰهُ ٱلۡجَزَآءَ ٱلۡأَوۡفَىٰ"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "وَأَنَّ إِلَىٰ رَبِّكَ ٱلۡمُنتَهَىٰ"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "وَأَنَّهُۥ هُوَ أَضۡحَكَ وَأَبۡكَىٰ"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "وَأَنَّهُۥ هُوَ أَمَاتَ وَأَحۡيَا"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "وَأَنَّهُۥ خَلَقَ ٱلزَّوۡجَيۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰ"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "مِن نُّطۡفَةٍ إِذَا تُمۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "وَأَنَّ عَلَيۡهِ ٱلنَّشَآءَةَ ٱلۡأُخۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "وَأَنَّهُۥ هُوَ أَغۡنَىٰ وَأَقۡنَىٰ"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "وَأَنَّهُۥ هُوَ رَبُّ ٱلشِّعۡرَىٰ"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "وَأَنَّهُۥ أَهۡلَكَ عَادًا ٱلۡأُولَىٰ"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "وَثَمُودࣰ ا فَمَا أَبۡقَىٰ"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "وَقَوۡمَ نُوحࣲ مِّن قَبۡلُۖ إِنَّهُمُۥ كَانُواْ هُمُۥ أَظۡلَمَ وَأَطۡغَىٰ"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "وَٱلۡمُؤۡتَفِكَةَ أَهۡوَىٰ"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "فَغَشَّىٰهَا مَا غَشَّىٰ"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "فَبِأَيِّ ءَالَآءِ رَبِّكَ تَتَمَارَىٰ"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "هَٰذَا نَذِيرࣱ مِّنَ ٱلنُّذُرِ ٱلۡأُولَىٰ"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "أَزِفَتِ ٱلۡأٓزِفَةُ"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "لَيۡسَ لَهَا مِن دُونِ ٱللَّهِ كَاشِفَةٌ"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "أَفَمِنۡ هَٰذَا ٱلۡحَدِيثِ تَعۡجَبُونَ"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "وَتَضۡحَكُونَ وَلَا تَبۡكُونَ"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "وَأَنتُمُۥ سَٰمِدُونَ"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "فَٱسۡجُدُواْۤ لِلَّهِۤ وَٱعۡبُدُواْ۩"
        },
        {
            "chapter": 54,
            "verse": 1,
            "text": "ٱقۡتَرَبَتِ ٱلسَّاعَةُ وَٱنشَقَّ ٱلۡقَمَرُ"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "وَإِن يَرَوۡاْ ءَايَةࣰ يُعۡرِضُواْ وَيَقُولُواْ سِحۡرࣱ مُّسۡتَمِرࣱّ‏"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "وَكَذَّبُواْ وَٱتَّبَعُواْ أَهۡوَآءَهُمُۥۚ وَكُلُّ أَمۡرࣲ مُّسۡتَقِرࣱّ‏"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "وَلَقَدۡ جَآءَهُمُۥ مِنَ ٱلۡأَنۢبَآءِ مَا فِيهِۦ مُزۡدَجَرٌ"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حِكۡمَةُۢ بَٰلِغَةࣱۖ فَمَا تُغۡنِ ٱلنُّذُرُ"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "فَتَوَلَّ عَنۡهُمُۥۘ يَوۡمَ يَدۡعُ ٱلدَّاعِ إِلَىٰ شَيۡءࣲ نُّكۡرٍ"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "خُشَّعًا أَبۡصَٰرُهُمُۥ يَخۡرُجُونَ مِنَ ٱلۡأَجۡدَاثِ كَأَنَّهُمُۥ جَرَادࣱ مُّنتَشِرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "مُّهۡطِعِينَ إِلَى ٱلدَّاعِۦۖ يَقُولُ ٱلۡكَٰفِرُونَ هَٰذَا يَوۡمٌ عَسِرࣱ‏"
        }
    ]
}