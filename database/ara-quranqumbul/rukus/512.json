{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "لَاْ أُقۡسِمُ بِيَوۡمِ ٱلۡقِيَٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "وَلَا أُقۡسِمُ بِٱلنَّفۡسِ ٱللَّوَّامَةِ"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "أَيَحۡسِبُ ٱلۡإِنسَٰنُ أَلَّن نَّجۡمَعَ عِظَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "بَلَىٰ قَٰدِرِينَ عَلَىٰ أَن نُّسَوِّيَ بَنَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بَلۡ يُرِيدُ ٱلۡإِنسَٰنُ لِيَفۡجُرَ أَمَامَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "يَسۡـَٔلُ أَيَّانَ يَوۡمُ ٱلۡقِيَٰمَةِ"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "فَإِذَا بَرِقَ ٱلۡبَصَرُ"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "وَخَسَفَ ٱلۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "وَجُمِعَ ٱلشَّمۡسُ وَٱلۡقَمَرُ"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "يَقُولُ ٱلۡإِنسَٰنُ يَوۡمَئِذٍ أَيۡنَ ٱلۡمَفَرُّ"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "كَلَّا لَا وَزَرَ"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمُسۡتَقَرُّ"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "يُنَبَّؤُاْ ٱلۡإِنسَٰنُ يَوۡمَئِذِۭ بِمَا قَدَّمَ وَأَخَّرَ"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بَلِ ٱلۡإِنسَٰنُ عَلَىٰ نَفۡسِهِۦ بَصِيرَةࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "وَلَوۡ أَلۡقَىٰ مَعَاذِيرَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "لَا تُحَرِّكۡ بِهِۦ لِسَانَكَ لِتَعۡجَلَ بِهِۦ"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "إِنَّ عَلَيۡنَا جَمۡعَهُۥ وَقُرَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "فَإِذَا قَرَأۡنَٰهُۥ فَٱتَّبِعۡ قُرَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "ثُمَّ إِنَّ عَلَيۡنَا بَيَانَهُۥ"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "كَلَّا بَلۡ يُحِبُّونَ ٱلۡعَاجِلَةَ"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "وَيَذَرُونَ ٱلۡأٓخِرَةَ"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "وُجُوهࣱ يَوۡمَئِذࣲ نَّاضِرَةٌ"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "إِلَىٰ رَبِّهَا نَاظِرَةࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "وَوُجُوهࣱ يَوۡمَئِذِۭ بَاسِرَةࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "تَظُنُّ أَن يُفۡعَلَ بِهَا فَاقِرَةࣱ‏"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "كَلَّا إِذَا بَلَغَتِ ٱلتَّرَاقِيَ"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "وَقِيلَ مَن رَّاقࣲ‏"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "وَظَنَّ أَنَّهُ ٱلۡفِرَاقُ"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "وَٱلۡتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "إِلَىٰ رَبِّكَ يَوۡمَئِذٍ ٱلۡمَسَاقُ"
        }
    ]
}