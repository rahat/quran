{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "إِذَا ٱلسَّمَآءُ ٱنفَطَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "وَإِذَا ٱلۡكَوَاكِبُ ٱنتَثَرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "وَإِذَا ٱلۡبِحَارُ فُجِّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "وَإِذَا ٱلۡقُبُورُ بُعۡثِرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "عَلِمَتۡ نَفۡسࣱ مَّا قَدَّمَتۡ وَأَخَّرَتۡ"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "يَٰأَيُّهَا ٱلۡإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلۡكَرِيمِ"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "ٱلَّذِي خَلَقَكَ فَسَوَّىٰكَ فَعَدَّلَكَ"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "فِي أَيِّ صُورَةࣲ مَّا شَآءَ رَكَّبَكَ"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "كَلَّا بَلۡ تُكَذِّبُونَ بِٱلدِّينِ"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "وَإِنَّ عَلَيۡكُمُۥ لَحَٰفِظِينَ"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كِرَامࣰ ا كَٰتِبِينَ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "يَعۡلَمُونَ مَا تَفۡعَلُونَ"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِي نَعِيمࣲ‏"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "وَإِنَّ ٱلۡفُجَّارَ لَفِي جَحِيمࣲ‏"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "يَصۡلَوۡنَهَا يَوۡمَ ٱلدِّينِ"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "وَمَا هُمُۥ عَنۡهَا بِغَآئِبِينَ"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "وَمَا أَدۡرَىٰكَ مَا يَوۡمُ ٱلدِّينِ"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ثُمَّ مَا أَدۡرَىٰكَ مَا يَوۡمُ ٱلدِّينِ"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "يَوۡمُ لَا تَمۡلِكُ نَفۡسࣱ لِّنَفۡسࣲ شَيۡـࣰٔ اۖ وَٱلۡأَمۡرُ يَوۡمَئِذࣲ لِّلَّهِ"
        }
    ]
}