{
    "rukus": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞ٱحۡشُرُواْ ٱلَّذِينَ ظَلَمُواْ وَأَزۡوَٰجَهُمُۥ وَمَا كَانُواْ يَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "مِن دُونِ ٱللَّهِ فَٱهۡدُوهُمُۥ إِلَىٰ صِۜرَٰطِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وَقِفُوهُمُۥۖ إِنَّهُمُۥ مَسۡـُٔولُونَ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "مَا لَكُمُۥ لَا تَنَاصَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بَلۡ هُمُ ٱلۡيَوۡمَ مُسۡتَسۡلِمُونَ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قَالُواْ إِنَّكُمُۥ كُنتُمُۥ تَأۡتُونَنَا عَنِ ٱلۡيَمِينِ"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قَالُواْ بَل لَّمۡ تَكُونُواْ مُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وَمَا كَانَ لَنَا عَلَيۡكُمُۥ مِن سُلۡطَٰنِۭۖ بَلۡ كُنتُمُۥ قَوۡمࣰ ا طَٰغِينَ"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فَحَقَّ عَلَيۡنَا قَوۡلُ رَبِّنَاۖ إِنَّا لَذَآئِقُونَ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فَأَغۡوَيۡنَٰكُمُۥ إِنَّا كُنَّا غَٰوِينَ"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فَإِنَّهُمُۥ يَوۡمَئِذࣲ فِي ٱلۡعَذَابِ مُشۡتَرِكُونَ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إِنَّا كَذَٰلِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إِنَّهُمُۥ كَانُواْ إِذَا قِيلَ لَهُمُۥ لَا إِلَٰهَ إِلَّا ٱللَّهُ يَسۡتَكۡبِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "وَيَقُولُونَ أَى۪نَّا لَتَارِكُواْ ءَالِهَتِنَا لِشَاعِرࣲ مَّجۡنُونِۭ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بَلۡ جَآءَ بِٱلۡحَقِّ وَصَدَّقَ ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إِنَّكُمُۥ لَذَآئِقُواْ ٱلۡعَذَابِ ٱلۡأَلِيمِ"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وَمَا تُجۡزَوۡنَ إِلَّا مَا كُنتُمُۥ تَعۡمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أُوْلَٰٓئِكَ لَهُمُۥ رِزۡقࣱ مَّعۡلُومࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فَوَٰكِهُ وَهُمُۥ مُكۡرَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "فِي جَنَّٰتِ ٱلنَّعِيمِ"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "عَلَىٰ سُرُرࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يُطَافُ عَلَيۡهِمُۥ بِكَأۡسࣲ مِّن مَّعِينِۭ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بَيۡضَآءَ لَذَّةࣲ لِّلشَّٰرِبِينَ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لَا فِيهَا غَوۡلࣱ وَلَا هُمُۥ عَنۡهَا يُنزَفُونَ"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وَعِندَهُمُۥ قَٰصِرَٰتُ ٱلطَّرۡفِ عِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كَأَنَّهُنَّ بَيۡضࣱ مَّكۡنُونࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قَالَ قَآئِلࣱ مِّنۡهُمُۥ إِنِّي كَانَ لِي قَرِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يَقُولُ أَ۟نَّكَ لَمِنَ ٱلۡمُصَدِّقِينَ"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أَ۟ذَا مُتۡنَا وَكُنَّا تُرَابࣰ ا وَعِظَٰمًا أَ۟نَّا لَمَدِينُونَ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قَالَ هَلۡ أَنتُمُۥ مُطَّلِعُونَ"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فَٱطَّلَعَ فَرَءَاهُۥ فِي سَوَآءِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قَالَ تَٱللَّهِ إِن كِدتَّ لَتُرۡدِينِ"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "وَلَوۡلَا نِعۡمَةُ رَبِّي لَكُنتُ مِنَ ٱلۡمُحۡضَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أَفَمَا نَحۡنُ بِمَيِّتِينَ"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إِلَّا مَوۡتَتَنَا ٱلۡأُولَىٰ وَمَا نَحۡنُ بِمُعَذَّبِينَ"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إِنَّ هَٰذَا لَهُوَ ٱلۡفَوۡزُ ٱلۡعَظِيمُ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لِمِثۡلِ هَٰذَا فَلۡيَعۡمَلِ ٱلۡعَٰمِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أَذَٰلِكَ خَيۡرࣱ نُّزُلًا أَمۡ شَجَرَةُ ٱلزَّقُّومِ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إِنَّا جَعَلۡنَٰهَا فِتۡنَةࣰ لِّلظَّٰلِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إِنَّهَا شَجَرَةࣱ تَخۡرُجُ فِي أَصۡلِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طَلۡعُهَا كَأَنَّهُۥ رُءُوسُ ٱلشَّيَٰطِينِ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فَإِنَّهُمُۥ لَأٓكِلُونَ مِنۡهَا فَمَالِـُٔونَ مِنۡهَا ٱلۡبُطُونَ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثُمَّ إِنَّ لَهُمُۥ عَلَيۡهَا لَشَوۡبࣰ ا مِّنۡ حَمِيمࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثُمَّ إِنَّ مَرۡجِعَهُمُۥ لَإِلَى ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إِنَّهُمُۥ أَلۡفَوۡاْ ءَابَآءَهُمُۥ ضَآلِّينَ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فَهُمُۥ عَلَىٰ ءَاثَٰرِهِمُۥ يُهۡرَعُونَ"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "وَلَقَدۡ ضَلَّ قَبۡلَهُمُۥ أَكۡثَرُ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "وَلَقَدۡ أَرۡسَلۡنَا فِيهِمُۥ مُنذِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فَٱنظُرۡ كَيۡفَ كَانَ عَٰقِبَةُ ٱلۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        }
    ]
}