{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "كَذَّبَتۡ ثَمُودُ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "فَقَالُواْ أَبَشَرࣰ ا مِّنَّا وَٰحِدࣰ ا نَّتَّبِعُهُۥ إِنَّا إِذࣰ ا لَّفِي ضَلَٰلࣲ وَسُعُرٍ"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "أَ۟لۡقِيَ ٱلذِّكۡرُ عَلَيۡهِۦ مِنۢ بَيۡنِنَا بَلۡ هُوَ كَذَّابٌ أَشِرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "سَيَعۡلَمُونَ غَدࣰ ا مَّنِ ٱلۡكَذَّابُ ٱلۡأَشِرُ"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "إِنَّا مُرۡسِلُواْ ٱلنَّاقَةِ فِتۡنَةࣰ لَّهُمُۥ فَٱرۡتَقِبۡهُمُۥ وَٱصۡطَبِرۡ"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "وَنَبِّئۡهُمُۥ أَنَّ ٱلۡمَآءَ قِسۡمَةُۢ بَيۡنَهُمُۥۖ كُلُّ شِرۡبࣲ مُّحۡتَضَرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "فَنَادَوۡاْ صَاحِبَهُمُۥ فَتَعَاطَىٰ فَعَقَرَ"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "فَكَيۡفَ كَانَ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "إِنَّا أَرۡسَلۡنَا عَلَيۡهِمُۥ صَيۡحَةࣰ وَٰحِدَةࣰ فَكَانُواْ كَهَشِيمِ ٱلۡمُحۡتَظِرِ"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "وَلَقَدۡ يَسَّرۡنَا ٱلۡقُرَانَ لِلذِّكۡرِ فَهَلۡ مِن مُّدَّكِرࣲ‏"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "كَذَّبَتۡ قَوۡمُ لُوطِۭ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "إِنَّا أَرۡسَلۡنَا عَلَيۡهِمُۥ حَاصِبًا إِلَّا ءَالَ لُوطࣲۖ نَّجَّيۡنَٰهُمُۥ بِسَحَرࣲ‏"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "نِّعۡمَةࣰ مِّنۡ عِندِنَاۚ كَذَٰلِكَ نَجۡزِي مَن شَكَرَ"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "وَلَقَدۡ أَنذَرَهُمُۥ بَطۡشَتَنَا فَتَمَارَوۡاْ بِٱلنُّذُرِ"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "وَلَقَدۡ رَٰوَدُوهُۥ عَن ضَيۡفِهِۦ فَطَمَسۡنَا أَعۡيُنَهُمُۥ فَذُوقُواْ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "وَلَقَدۡ صَبَّحَهُمُۥ بُكۡرَةً عَذَابࣱ مُّسۡتَقِرࣱّ‏"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "فَذُوقُواْ عَذَابِي وَنُذُرِ"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "وَلَقَدۡ يَسَّرۡنَا ٱلۡقُرَانَ لِلذِّكۡرِ فَهَلۡ مِن مُّدَّكِرࣲ‏"
        }
    ]
