{
    "chapter": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وَٱلصَّٰٓفَّٰتِ صَفࣰّ ا"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فَٱلزَّٰجِرَٰتِ زَجۡرࣰ ا"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فَٱلتَّٰلِيَٰتِ ذِكۡرًا"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إِنَّ إِلَٰهَكُمُۥ لَوَٰحِدࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رَّبُّ ٱلسَّمَٰوَٰتِ وَٱلۡأَرۡضِ وَمَا بَيۡنَهُمَا وَرَبُّ ٱلۡمَشَٰرِقِ"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إِنَّا زَيَّنَّا ٱلسَّمَآءَ ٱلدُّنۡيَا بِزِينَةِ ٱلۡكَوَاكِبِ"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وَحِفۡظࣰ ا مِّن كُلِّ شَيۡطَٰنࣲ مَّارِدࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لَّا يَسۡمَعُونَ إِلَى ٱلۡمَلَإِ ٱلۡأَعۡلَىٰ وَيُقۡذَفُونَ مِن كُلِّ جَانِبࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دُحُورࣰ اۖ وَلَهُمُۥ عَذَابࣱ وَاصِبٌ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إِلَّا مَنۡ خَطِفَ ٱلۡخَطۡفَةَ فَأَتۡبَعَهُۥ شِهَابࣱ ثَاقِبࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فَٱسۡتَفۡتِهِمُۥ أَهُمُۥ أَشَدُّ خَلۡقًا أَم مَّنۡ خَلَقۡنَاۚ إِنَّا خَلَقۡنَٰهُمُۥ مِن طِينࣲ لَّازِبِۭ"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بَلۡ عَجِبۡتَ وَيَسۡخَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وَإِذَا ذُكِّرُواْ لَا يَذۡكُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وَإِذَا رَأَوۡاْ ءَايَةࣰ يَسۡتَسۡخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وَقَالُواْ إِنۡ هَٰذَا إِلَّا سِحۡرࣱ مُّبِينٌ"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أَ۟ذَا مُتۡنَا وَكُنَّا تُرَابࣰ ا وَعِظَٰمًا أَ۟نَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أَوَ ءَابَآؤُنَا ٱلۡأَوَّلُونَ"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قُلۡ نَعَمۡ وَأَنتُمُۥ دَٰخِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فَإِنَّمَا هِيَ زَجۡرَةࣱ وَٰحِدَةࣱ فَإِذَا هُمُۥ يَنظُرُونَ"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وَقَالُواْ يَٰوَيۡلَنَا هَٰذَا يَوۡمُ ٱلدِّينِ"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هَٰذَا يَوۡمُ ٱلۡفَصۡلِ ٱلَّذِي كُنتُمُۥ بِهِۦ تُكَذِّبُونَ"
        },
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞ٱحۡشُرُواْ ٱلَّذِينَ ظَلَمُواْ وَأَزۡوَٰجَهُمُۥ وَمَا كَانُواْ يَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "مِن دُونِ ٱللَّهِ فَٱهۡدُوهُمُۥ إِلَىٰ صِۜرَٰطِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وَقِفُوهُمُۥۖ إِنَّهُمُۥ مَسۡـُٔولُونَ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "مَا لَكُمُۥ لَا تَنَاصَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بَلۡ هُمُ ٱلۡيَوۡمَ مُسۡتَسۡلِمُونَ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قَالُواْ إِنَّكُمُۥ كُنتُمُۥ تَأۡتُونَنَا عَنِ ٱلۡيَمِينِ"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قَالُواْ بَل لَّمۡ تَكُونُواْ مُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وَمَا كَانَ لَنَا عَلَيۡكُمُۥ مِن سُلۡطَٰنِۭۖ بَلۡ كُنتُمُۥ قَوۡمࣰ ا طَٰغِينَ"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فَحَقَّ عَلَيۡنَا قَوۡلُ رَبِّنَاۖ إِنَّا لَذَآئِقُونَ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فَأَغۡوَيۡنَٰكُمُۥ إِنَّا كُنَّا غَٰوِينَ"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فَإِنَّهُمُۥ يَوۡمَئِذࣲ فِي ٱلۡعَذَابِ مُشۡتَرِكُونَ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إِنَّا كَذَٰلِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إِنَّهُمُۥ كَانُواْ إِذَا قِيلَ لَهُمُۥ لَا إِلَٰهَ إِلَّا ٱللَّهُ يَسۡتَكۡبِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "وَيَقُولُونَ أَى۪نَّا لَتَارِكُواْ ءَالِهَتِنَا لِشَاعِرࣲ مَّجۡنُونِۭ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بَلۡ جَآءَ بِٱلۡحَقِّ وَصَدَّقَ ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إِنَّكُمُۥ لَذَآئِقُواْ ٱلۡعَذَابِ ٱلۡأَلِيمِ"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وَمَا تُجۡزَوۡنَ إِلَّا مَا كُنتُمُۥ تَعۡمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أُوْلَٰٓئِكَ لَهُمُۥ رِزۡقࣱ مَّعۡلُومࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فَوَٰكِهُ وَهُمُۥ مُكۡرَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "فِي جَنَّٰتِ ٱلنَّعِيمِ"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "عَلَىٰ سُرُرࣲ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يُطَافُ عَلَيۡهِمُۥ بِكَأۡسࣲ مِّن مَّعِينِۭ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بَيۡضَآءَ لَذَّةࣲ لِّلشَّٰرِبِينَ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لَا فِيهَا غَوۡلࣱ وَلَا هُمُۥ عَنۡهَا يُنزَفُونَ"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "وَعِندَهُمُۥ قَٰصِرَٰتُ ٱلطَّرۡفِ عِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كَأَنَّهُنَّ بَيۡضࣱ مَّكۡنُونࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فَأَقۡبَلَ بَعۡضُهُمُۥ عَلَىٰ بَعۡضࣲ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قَالَ قَآئِلࣱ مِّنۡهُمُۥ إِنِّي كَانَ لِي قَرِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يَقُولُ أَ۟نَّكَ لَمِنَ ٱلۡمُصَدِّقِينَ"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أَ۟ذَا مُتۡنَا وَكُنَّا تُرَابࣰ ا وَعِظَٰمًا أَ۟نَّا لَمَدِينُونَ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قَالَ هَلۡ أَنتُمُۥ مُطَّلِعُونَ"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فَٱطَّلَعَ فَرَءَاهُۥ فِي سَوَآءِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قَالَ تَٱللَّهِ إِن كِدتَّ لَتُرۡدِينِ"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "وَلَوۡلَا نِعۡمَةُ رَبِّي لَكُنتُ مِنَ ٱلۡمُحۡضَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أَفَمَا نَحۡنُ بِمَيِّتِينَ"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إِلَّا مَوۡتَتَنَا ٱلۡأُولَىٰ وَمَا نَحۡنُ بِمُعَذَّبِينَ"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إِنَّ هَٰذَا لَهُوَ ٱلۡفَوۡزُ ٱلۡعَظِيمُ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لِمِثۡلِ هَٰذَا فَلۡيَعۡمَلِ ٱلۡعَٰمِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أَذَٰلِكَ خَيۡرࣱ نُّزُلًا أَمۡ شَجَرَةُ ٱلزَّقُّومِ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إِنَّا جَعَلۡنَٰهَا فِتۡنَةࣰ لِّلظَّٰلِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إِنَّهَا شَجَرَةࣱ تَخۡرُجُ فِي أَصۡلِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طَلۡعُهَا كَأَنَّهُۥ رُءُوسُ ٱلشَّيَٰطِينِ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فَإِنَّهُمُۥ لَأٓكِلُونَ مِنۡهَا فَمَالِـُٔونَ مِنۡهَا ٱلۡبُطُونَ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثُمَّ إِنَّ لَهُمُۥ عَلَيۡهَا لَشَوۡبࣰ ا مِّنۡ حَمِيمࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثُمَّ إِنَّ مَرۡجِعَهُمُۥ لَإِلَى ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إِنَّهُمُۥ أَلۡفَوۡاْ ءَابَآءَهُمُۥ ضَآلِّينَ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فَهُمُۥ عَلَىٰ ءَاثَٰرِهِمُۥ يُهۡرَعُونَ"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "وَلَقَدۡ ضَلَّ قَبۡلَهُمُۥ أَكۡثَرُ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "وَلَقَدۡ أَرۡسَلۡنَا فِيهِمُۥ مُنذِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فَٱنظُرۡ كَيۡفَ كَانَ عَٰقِبَةُ ٱلۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 75,
            "text": "وَلَقَدۡ نَادَىٰنَا نُوحࣱ فَلَنِعۡمَ ٱلۡمُجِيبُونَ"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "وَنَجَّيۡنَٰهُۥ وَأَهۡلَهُۥ مِنَ ٱلۡكَرۡبِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وَجَعَلۡنَا ذُرِّيَّتَهُۥ هُمُ ٱلۡبَاقِينَ"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وَتَرَكۡنَا عَلَيۡهِۦ فِي ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سَلَٰمٌ عَلَىٰ نُوحࣲ فِي ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا ٱلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثُمَّ أَغۡرَقۡنَا ٱلۡأٓخَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "۞وَإِنَّ مِن شِيعَتِهِۦ لَإِبۡرَٰهِيمَ"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "إِذۡ جَآءَ رَبَّهُۥ بِقَلۡبࣲ سَلِيمٍ"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "إِذۡ قَالَ لِأَبِيهِۦ وَقَوۡمِهِۦ مَاذَا تَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "أَى۪فۡكًا ءَالِهَةࣰ دُونَ ٱللَّهِ تُرِيدُونَ"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "فَمَا ظَنُّكُمُۥ بِرَبِّ ٱلۡعَٰلَمِينَ"
        },
        {
            "chapter": 37,
            "verse": 88,
            "text": "فَنَظَرَ نَظۡرَةࣰ فِي ٱلنُّجُومِ"
        },
        {
            "chapter": 37,
            "verse": 89,
            "text": "فَقَالَ إِنِّي سَقِيمࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 90,
            "text": "فَتَوَلَّوۡاْ عَنۡهُۥ مُدۡبِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 91,
            "text": "فَرَاغَ إِلَىٰ ءَالِهَتِهِمُۥ فَقَالَ أَلَا تَأۡكُلُونَ"
        },
        {
            "chapter": 37,
            "verse": 92,
            "text": "مَا لَكُمُۥ لَا تَنطِقُونَ"
        },
        {
            "chapter": 37,
            "verse": 93,
            "text": "فَرَاغَ عَلَيۡهِمُۥ ضَرۡبَۢا بِٱلۡيَمِينِ"
        },
        {
            "chapter": 37,
            "verse": 94,
            "text": "فَأَقۡبَلُواْ إِلَيۡهِۦ يَزِفُّونَ"
        },
        {
            "chapter": 37,
            "verse": 95,
            "text": "قَالَ أَتَعۡبُدُونَ مَا تَنۡحِتُونَ"
        },
        {
            "chapter": 37,
            "verse": 96,
            "text": "وَٱللَّهُ خَلَقَكُمُۥ وَمَا تَعۡمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 97,
            "text": "قَالُواْ ٱبۡنُواْ لَهُۥ بُنۡيَٰنࣰ ا فَأَلۡقُوهُۥ فِي ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 98,
            "text": "فَأَرَادُواْ بِهِۦ كَيۡدࣰ ا فَجَعَلۡنَٰهُمُ ٱلۡأَسۡفَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 99,
            "text": "وَقَالَ إِنِّي ذَاهِبٌ إِلَىٰ رَبِّي سَيَهۡدِينِ"
        },
        {
            "chapter": 37,
            "verse": 100,
            "text": "رَبِّ هَبۡ لِي مِنَ ٱلصَّٰلِحِينَ"
        },
        {
            "chapter": 37,
            "verse": 101,
            "text": "فَبَشَّرۡنَٰهُۥ بِغُلَٰمٍ حَلِيمࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 102,
            "text": "فَلَمَّا بَلَغَ مَعَهُ ٱلسَّعۡيَ قَالَ يَٰبُنَيِّ إِنِّيَ أَرَىٰ فِي ٱلۡمَنَامِ أَنِّيَ أَذۡبَحُكَ فَٱنظُرۡ مَاذَا تَرَىٰۚ قَالَ يَٰأَبَتِ ٱفۡعَلۡ مَا تُؤۡمَرُۖ سَتَجِدُنِي إِن شَآءَ ٱللَّهُ مِنَ ٱلصَّٰبِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 103,
            "text": "فَلَمَّا أَسۡلَمَا وَتَلَّهُۥ لِلۡجَبِينِ"
        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "وَنَٰدَيۡنَٰهُۥ أَن يَٰإِبۡرَٰهِيمُ"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "قَدۡ صَدَّقۡتَ ٱلرُّءۡيَاۚ إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "إِنَّ هَٰذَا لَهُوَ ٱلۡبَلَٰٓؤُاْ ٱلۡمُبِينُ"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "وَفَدَيۡنَٰهُۥ بِذِبۡحٍ عَظِيمࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "وَتَرَكۡنَا عَلَيۡهِۦ فِي ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "سَلَٰمٌ عَلَىٰ إِبۡرَٰهِيمَ"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا ٱلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "وَبَشَّرۡنَٰهُۥ بِإِسۡحَٰقَ نَبِيࣰّ ا مِّنَ ٱلصَّٰلِحِينَ"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "وَبَٰرَكۡنَا عَلَيۡهِۦ وَعَلَىٰ إِسۡحَٰقَۚ وَمِن ذُرِّيَّتِهِمَا مُحۡسِنࣱ وَظَالِمࣱ لِّنَفۡسِهِۦ مُبِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 114,
            "text": "وَلَقَدۡ مَنَنَّا عَلَىٰ مُوسَىٰ وَهَٰرُونَ"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "وَنَجَّيۡنَٰهُمَا وَقَوۡمَهُمَا مِنَ ٱلۡكَرۡبِ ٱلۡعَظِيمِ"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "وَنَصَرۡنَٰهُمُۥ فَكَانُواْ هُمُ ٱلۡغَٰلِبِينَ"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "وَءَاتَيۡنَٰهُمَا ٱلۡكِتَٰبَ ٱلۡمُسۡتَبِينَ"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "وَهَدَيۡنَٰهُمَا ٱلصِّۜرَٰطَ ٱلۡمُسۡتَقِيمَ"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "وَتَرَكۡنَا عَلَيۡهِمَا فِي ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "سَلَٰمٌ عَلَىٰ مُوسَىٰ وَهَٰرُونَ"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "إِنَّهُمَا مِنۡ عِبَادِنَا ٱلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "وَإِنَّ إِلۡيَاسَ لَمِنَ ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "إِذۡ قَالَ لِقَوۡمِهِۦ أَلَا تَتَّقُونَ"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "أَتَدۡعُونَ بَعۡلࣰ ا وَتَذَرُونَ أَحۡسَنَ ٱلۡخَٰلِقِينَ"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "ٱللَّهُ رَبُّكُمُۥ وَرَبُّ ءَابَآئِكُمُ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "فَكَذَّبُوهُۥ فَإِنَّهُمُۥ لَمُحۡضَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "وَتَرَكۡنَا عَلَيۡهِۦ فِي ٱلۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "سَلَٰمٌ عَلَىٰ إِلۡ يَاسِينَ"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا ٱلۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "وَإِنَّ لُوطࣰ ا لَّمِنَ ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "إِذۡ نَجَّيۡنَٰهُۥ وَأَهۡلَهُۥ أَجۡمَعِينَ"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "إِلَّا عَجُوزࣰ ا فِي ٱلۡغَٰبِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "ثُمَّ دَمَّرۡنَا ٱلۡأٓخَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "وَإِنَّكُمُۥ لَتَمُرُّونَ عَلَيۡهِمُۥ مُصۡبِحِينَ"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "وَبِٱلَّيۡلِۚ أَفَلَا تَعۡقِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 139,
            "text": "وَإِنَّ يُونُسَ لَمِنَ ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 140,
            "text": "إِذۡ أَبَقَ إِلَى ٱلۡفُلۡكِ ٱلۡمَشۡحُونِ"
        },
        {
            "chapter": 37,
            "verse": 141,
            "text": "فَسَاهَمَ فَكَانَ مِنَ ٱلۡمُدۡحَضِينَ"
        },
        {
            "chapter": 37,
            "verse": 142,
            "text": "فَٱلۡتَقَمَهُ ٱلۡحُوتُ وَهُوَ مُلِيمࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 143,
            "text": "فَلَوۡلَا أَنَّهُۥ كَانَ مِنَ ٱلۡمُسَبِّحِينَ"
        },
        {
            "chapter": 37,
            "verse": 144,
            "text": "لَلَبِثَ فِي بَطۡنِهِۦ إِلَىٰ يَوۡمِ يُبۡعَثُونَ"
        },
        {
            "chapter": 37,
            "verse": 145,
            "text": "۞فَنَبَذۡنَٰهُۥ بِٱلۡعَرَآءِ وَهُوَ سَقِيمࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وَأَنۢبَتۡنَا عَلَيۡهِۦ شَجَرَةࣰ مِّن يَقۡطِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وَأَرۡسَلۡنَٰهُۥ إِلَىٰ مِاْئَةِ أَلۡفٍ أَوۡ يَزِيدُونَ"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فَـَٔامَنُواْ فَمَتَّعۡنَٰهُمُۥ إِلَىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فَٱسۡتَفۡتِهِمُۥ أَلِرَبِّكَ ٱلۡبَنَاتُ وَلَهُمُ ٱلۡبَنُونَ"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "أَمۡ خَلَقۡنَا ٱلۡمَلَٰٓئِكَةَ إِنَٰثࣰ ا وَهُمُۥ شَٰهِدُونَ"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "أَلَا إِنَّهُمُۥ مِنۡ إِفۡكِهِمُۥ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "وَلَدَ ٱللَّهُ وَإِنَّهُمُۥ لَكَٰذِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "أَصۡطَفَى ٱلۡبَنَاتِ عَلَى ٱلۡبَنِينَ"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "مَا لَكُمُۥ كَيۡفَ تَحۡكُمُونَ"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "أَفَلَا تَذَّكَّرُونَ"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "أَمۡ لَكُمُۥ سُلۡطَٰنࣱ مُّبِينࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فَأۡتُواْ بِكِتَٰبِكُمُۥ إِن كُنتُمُۥ صَٰدِقِينَ"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وَجَعَلُواْ بَيۡنَهُۥ وَبَيۡنَ ٱلۡجِنَّةِ نَسَبࣰ اۚ وَلَقَدۡ عَلِمَتِ ٱلۡجِنَّةُ إِنَّهُمُۥ لَمُحۡضَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سُبۡحَٰنَ ٱللَّهِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "إِلَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فَإِنَّكُمُۥ وَمَا تَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مَا أَنتُمُۥ عَلَيۡهِۦ بِفَٰتِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "إِلَّا مَنۡ هُوَ صَالِ ٱلۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وَمَا مِنَّا إِلَّا لَهُۥ مَقَامࣱ مَّعۡلُومࣱ‏"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وَإِنَّا لَنَحۡنُ ٱلصَّآفُّونَ"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وَإِنَّا لَنَحۡنُ ٱلۡمُسَبِّحُونَ"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وَإِن كَانُواْ لَيَقُولُونَ"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لَوۡ أَنَّ عِندَنَا ذِكۡرࣰ ا مِّنَ ٱلۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لَكُنَّا عِبَادَ ٱللَّهِ ٱلۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فَكَفَرُواْ بِهِۦۖ فَسَوۡفَ يَعۡلَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "وَلَقَدۡ سَبَقَتۡ كَلِمَتُنَا لِعِبَادِنَا ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "إِنَّهُمُۥ لَهُمُ ٱلۡمَنصُورُونَ"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وَإِنَّ جُندَنَا لَهُمُ ٱلۡغَٰلِبُونَ"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فَتَوَلَّ عَنۡهُمُۥ حَتَّىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وَأَبۡصِرۡهُمُۥ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "أَفَبِعَذَابِنَا يَسۡتَعۡجِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فَإِذَا نَزَلَ بِسَاحَتِهِمُۥ فَسَآءَ صَبَاحُ ٱلۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وَتَوَلَّ عَنۡهُمُۥ حَتَّىٰ حِينࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وَأَبۡصِرۡ فَسَوۡفَ يُبۡصِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سُبۡحَٰنَ رَبِّكَ رَبِّ ٱلۡعِزَّةِ عَمَّا يَصِفُونَ"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وَسَلَٰمٌ عَلَى ٱلۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وَٱلۡحَمۡدُ لِلَّهِ رَبِّ ٱلۡعَٰلَمِينَ"
        }
    ]
}