{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Meta s-sema jiċċarrat"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "umeta l-kwiekeb jixterdu"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "u meta l-ibħra jkunu mġiegħla jitħalltu u jogħlew"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "umeta l-oqbra jinqalbu ta' taħt fuq"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(dakinhar kull ruħ) tagħraf dak li għamlet qabel u wara"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Jabniedem, x'qarrqek dwar Sidek Kollu Ġieħ (u ma tridx ta' bih)"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "liħalqek u għamlek sħiħ u bil-qjies"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "utakl-għamla li ried"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Lefma għandkomx skużajl Iżda intom tgiddbu Jum il-Ħaqq"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "(Teiddbu Jum il-Ħaqq) meta tassew hemm (anġli) għassiesa fuqkom (ii jiktbu kollox fil-ktieb ta' l-għemejjel tagħkom)"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "kittieba ta' ġieħ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "lijjafu dak li tagħmlu"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Il-ġusti tabilħaqq jinsabu fil-hena"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "u'-ħżiena tabilħaqq jinsabu fin-Nar iħeġġeġ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "jinxtwew fih f'Jum il-Ħaqq"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "u majgħibux minnu"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "U x'inhu li jgħarrfek (Muħammad) x'inhu Jum il-Ħaqq"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Imbagħad (għal darba oħra) x'inhu li: jgħarrfek (Muħammad) x'inhu Jum il-Ħaqq"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Fil-Jum meta ebda ruħ ma tista' tagħmel xejn għal ruħ oħra, u l-amar, dakinhar, ikun (kollu kemm hu) ta' Alla"
        }
    ]
}