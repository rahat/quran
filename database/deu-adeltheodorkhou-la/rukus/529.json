{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Preise den Namen deines Herrn, des Allerhochsten"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Der erschafft und zurechtformt"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Und der das Maß setzt und rechtleitet"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Und der das Weidegras hervorbringt"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Und es dann zu grauer Spreu macht"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Wir werden dich lesen lassen, und du wirst nichts vergessen"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Außer dem, was Gott will. Er weiß, was offenliegt und was verborgen bleibt"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Und Wir werden dir das Gute leicht machen"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Ermahne nun, so die Ermahnung etwas nutzt"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Der wird es bedenken, der gottesfurchtig ist"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Meiden wird es aber der Ubelste"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Der im großen Feuer brennen wird"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Darin wird er dann weder sterben noch leben"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Es wird dem wohl ergehen, der sich lautert"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Des Namens seines Herrn gedenkt und betet"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Aber ihr zieht das diesseitige Leben vor"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Wo doch das Jenseits besser ist und eher Bestand hat"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Dies steht in den fruheren Blattern"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Den Blattern von Abraham und Mose"
        }
    ]
}