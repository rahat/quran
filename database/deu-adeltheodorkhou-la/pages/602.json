{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Dafur, daß Er die Quraysh zusammenbringt"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Daß Er sie zusammenbringt fur die Reise des Winters und des Sommers"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Sollen sie dem Herrn dieses Hauses dienen"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Der ihnen Speise gegen den Hunger gibt und Sicherheit gegen die Furcht gewahrt"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Hast du den gesehen, der das Gericht fur Luge erklart"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Das ist der, der die Waise zuruckstoßt"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Und nicht zur Speisung des Bedurftigen anhalt"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Wehe den Betenden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Die auf ihr Gebet nicht achtgeben"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Die nur gesehen werden wollen"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "Und die Hilfeleistung verwehren"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Wir haben dir die Fulle gegeben"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "So bete zu deinem Herrn und schachte (Opfertiere)"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Der dich haßt, der soll ohne Anhang sein"
        }
    ]
}