{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "کھڑکھڑانے والی (بڑاحادثہ)۔"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "کیا ہے وہ کھڑکھڑانے والی۔"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "اورآپ کو کیا معلوم کہ وہ کھڑکھڑانے والی کیا ہے۔"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "جس دن سب لوگ بکھرے ہوئے پروانوں کی طرح ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "اور پہاڑ دھنکی ہوئی روئی کی مانند ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "تو جس کی (نیکیوں کے) پلڑے بھاری ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "تو وہ دل پسند عیش و آرام میں ہوگا۔"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "اور جس کے (نیکیوں کے پلڑے) ہلکے ہوں گے۔"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "ان کا ٹھکانہ گہرا گڑھا (ھاویہ) ہوگا۔"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "اور تمہیں کیا معلوم کہ وہ (ھاویہ) کیا ہے۔"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "وہ بھڑکتی ہوئی آگ ہے۔"
        }
    ]
}