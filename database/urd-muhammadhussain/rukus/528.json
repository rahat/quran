{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "قَسم ہے آسمان کی اور رات کو نمودار ہو نے والے کی۔"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "اورتمہیں کیا معلوم کہ رات کو نمودار ہو نے والا کیا ہے؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "وہ چمکتا ہوا تاراہے۔"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "کوئی متنفس ایسا نہیں ہے جس پرکوئی نگہبان نہ ہو۔"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "سو انسان کو دیکھنا چاہیے کہ وہ کس چیز سے پیدا کیا گیا ہے؟"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "اچھل کر نکلنے والے پانی سے پیدا کیا گیا ہے۔"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "جو ریڑھ اور سینے کی ہڈیوں کے درمیان سے نکلتا ہے۔"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "بےشک وہ (خدا) اس کے لوٹا سکنے (دوبارہ پیدا کرنے) پر قادر ہے۔"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "جس دن سب پوشیدہ راز کھل جائیں گے۔"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "پس اس وقت نہ خود انسان کے پاس کوئی طاقت ہوگی اور نہ کوئی مددگار ہوگا۔"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "قَسم ہے بارش والے آسمان کی۔"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "اور (نباتات کے ذریعہ سے) پھٹ جانے والی زمین کی۔"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "کہ وہ (قرآن) قولِ فیصل ہے۔"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "کوئی ہنسی مذاق نہیں ہے۔"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "بےشک وہ (کافر لوگ) کچھ چالیں چل رہے ہیں۔"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "اور میں بھی (ان کیخلاف) ایک چال چل رہا ہوں۔"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "تو (اے رسول(ص)) ان (کافروں) کو مہلت دے دیجئے ان کو تھوڑی سی مہلت دے دیجئے۔"
        }
    ]
}