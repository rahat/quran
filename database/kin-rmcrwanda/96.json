{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Soma ku izina rya Nyagasani wawe waremye (ibiriho byose)"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "Yaremye umuntu mu rusoro rw’amaraso"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Soma! Kandi Nyagasani wawe ni Umunyacyubahiro uhebuje"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "We wigishije (umuntu kwandika) akoresheje ikaramu"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Yigishije umuntu ibyo atari azi"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Oya! Mu by’ukuri, umuntu ararengera (arahakana kandi agakora ibibi)"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Iyo amaze kubona ko yihagije (kubera ibyo atunze)"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Mu by’ukuri, (umenye ko) kwa Nyagasani wawe ari ho garukiro"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Ese (yewe Muhamadi) wabonye wawundi (Abu Jahl) ubuza"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Umugaragu (wacu Muhamadi) gusenga"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ese yabuza ate (umugaragu wacu) aramutse ari mu nzira y’ukuri"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Cyangwa ari gukangurira (abantu) gukora ibyiza, (mbwira icyaba iherezo ry’umubuza)"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ngaho mbwira (Abu Jahl) aramutse ahinyura (ukuri) akanatera umugongo"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Ese ntabwo azi ko Allah abona (ibyo akora)"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Oya! Natarekera aho, tuzamufata uruhanga rwe turukururire mu muriro"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Uruhanga rubeshya, rw’urunyabyaha"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Ngaho nahamagare abambari be"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Natwe tuzahamagara (abamalayika bacu) barinda umuriro (bamukanire urumukwiye)"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Oya! (Yewe Muhamadi), ntukamwumvire (Abu Jahl), ahubwo ujye wubama (usenga) uniyegereze Allah"
        }
    ]
}