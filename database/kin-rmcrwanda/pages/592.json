{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ariko mwe mukunda ubuzima bwo kuri iyi si"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Kandi ubwo ku mperuka ari bwo bwiza ndetse buzanahoraho"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Mu by’ukuri, ibi (mubwirwa) biri mu byanditswe byo hambere"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Inyandiko (zahishuriwe) Ibrahim na Musa"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ese inkuru y’ibizatwikira (abantu ku munsi w’imperuka) yakugezeho"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Kuri uwo munsi, uburanga bwa bamwe buzaba busuzuguritse"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "(Igihe bari ku isi) babaga bakora cyane (basenga ibindi bitari Allah), (ariko ku mperuka) bazaba bananiwe (kandi bafite ikimwaro)"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Bazinjira mu muriro utwika"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kandi bazanyweshwa ku isoko (y’amazi) yatuye"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Nta byo kurya bazaba bafite uretse ibyatsi birura kandi bifite amahwa"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "(Ibyo byo kurya) ntibizigera bibabyibushya cyangwa ngo bibamare inzara"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Kuri uwo munsi kandi (ubundi) buranga buzaba bukeye"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Bishimiye ibikorwa byabo"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "(Bari) mu Ijuru rihambaye"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Aho batazumva amagambo adafite umumaro"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Hazaba harimo isoko itemba"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Hazaba harimo ibitanda byigiye hejuru"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "N’ibikombe biteguwe (neza)"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "N’imisego ishashe (neza)"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "N’amatapi arambuye (biryoheye ijisho)"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Ese ntibitegereza uko ingamiya zaremwe"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "N’uburyo ikirere cyahanitswe"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "N’uburyo imisozi yashimangiwe (mu butaka)"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "N’uburyo isi yarambuwe"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Bityo, (yewe Muhamadi) bibutse kuko mu by’ukuri wowe uri uwibutsa"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Ntukabashyireho igitugu"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ariko utera umugongo (urwibutso) akanahakana"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah azamuhanisha ibihano bihambaye"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Mu by’ukuri, iwacu ni ho garukiro ryabo"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Hanyuma mu by’ukuri, ni twe tuzabakorera ibarura"
        }
    ]
}