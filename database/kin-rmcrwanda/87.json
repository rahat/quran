{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Singiza izina rya Nyagasani wawe, Uwikirenga"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "We waremye (buri kintu) akagitunganya"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Akanakigenera (gahunda yacyo yose), hanyuma akayikiyoboramo"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ni nawe umeza ubwatsi mu nzuri"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Hanyuma akabwumisha bukijima"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Rwose (yewe Muhamadi) tuzakwigisha (gusoma Qur’an), bityo ntuzayibagirwa"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Keretse ibyo Allah azashaka (ko wibagirwa). Mu by’ukuri, azi ibigaragara n’ibitagaragara"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Tuzanakorohereza inzira yo gukora ibyiza"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Bityo, ibutsa (abantu) igihe urwibutso rwabagirira akamaro"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Mu by’ukuri, hazibuka wa wundi utinya (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kandi inkozi y’ibibi izarugendera kure"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "(Uwo) ni we uzinjira mu muriro uhambaye"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Aho atazapfa (ngo aruhuke) cyangwa ngo agiriremo ubuzima (bwiza)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Mu by’ukuri, wawundi wiyejeje (akirinda ibyaha) yamaze kubona intsinzi"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Akanasingiza izina rya Nyagasani we ndetse akanakora amasengesho"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ariko mwe mukunda ubuzima bwo kuri iyi si"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Kandi ubwo ku mperuka ari bwo bwiza ndetse buzanahoraho"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Mu by’ukuri, ibi (mubwirwa) biri mu byanditswe byo hambere"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Inyandiko (zahishuriwe) Ibrahim na Musa"
        }
    ]
}