{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Igihe ikirere kizasatagurika"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "N’igihe inyenyeri zizagwa zikanyanyagira"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "N’igihe inyanja zizuzura (amazi yazo akarenga inkombe)"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "N’igihe imva zizabirindurwa (zigakurwamo ibizirimo)"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(Icyo gihe) umuntu azamenya ibyo yakoze mbere n’ibyo yaherutse (byaba ibyiza cyangwa ibibi)"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Yewe muntu! N’iki cyaguteye kwirengagiza Nyagasani wawe, Nyirubutagatifu"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "We wakuremye akagutunganya ndetse akanaguha imiterere igukwiye"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Yaragutunganyije aguha ishusho ashatse"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Oya! Nyamara muhakana umunsi w’ibihembo"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Ariko mu by’ukuri, mufite (abamalayika babashinzwe) babagenzura"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Bubashywe kandi bandika (ibikorwa byanyu byiza n’ibibi)"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Bazi ibyo mukora byose"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Mu by’ukuri, abakora ibyiza bazaba mu munezero uhambaye (Ijuru)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Naho abangizi bazaba mu muriro ugurumana"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Bazawinjiramo ku munsi w’ibihembo"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Kandi ntibazigera bawuvamo"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Nonese ni iki kizakumenyesha umunsi w’ibihembo"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Nanone, ni iki kizakumenyesha umunsi w’ibihembo"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "(Uzaba) ari umunsi umuntu atazagira icyo amarira undi, kandi kuri uwo munsi itegeko ryose rizaba ari irya Allah"
        }
    ]
}