{
    "chapter": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Ni iki (abahakanyi b’abakurayishi) babazanyaho"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Ku nkuru ihambaye (Qur’an n’umunsi w’imperuka)"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "(Iyo nkuru) batavugaho rumwe (hagati y’abayemera n’abayihakana)"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Oya! Rwose bidatinze bazamenya"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Oya nanone! Bidatinze bazamenya"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Ese isi ntitwayigize nk’isaso"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "N’imisozi tukayigira nk’imambo"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Tukanabarema muri ibitsina byombi (ikigabo n’ikigore)"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Kandi ibitotsi byanyu twabigize uburyo bw’ikiruhuko"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "N’ijoro turigira nk’umwambaro (binyuze mu mwijima waryo)"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "N’amanywa tuyagira ayo gushakiramo imibereho"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Tunubaka hejuru yanyu (ibirere) birindwi bikomeye"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Ndetse n’(izuba) turigira itara rimurika"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Tunamanura mu bicu amazi menshi yisuka"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Kugira ngo tuyereshe impeke n’ibimera"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "N’imirima y’ibiti byegeranye"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Mu by’ukuri, umunsi w’urubanza ufite igihe ntarengwa"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Umunsi impanda izavuzwa, maze mukaza muri amatsinda"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "N’ikirere kizakingurwa maze gihinduke nk’amarembo"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "N’imisozi izakurwa mu myanya yayo, imere nk’ibirorirori"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Mu by’ukuri, umuriro wa Jahanamu urarekereje"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Ni wo garukiro ry’ibyigomeke"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Bizawubamo imyaka n’imyaniko"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "(Ibyo byigomeke) ntibizawusogongereramo ubukonje cyangwa ikinyobwa"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Uretse amazi yatuye n’amashyira"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(Ibyo bikazaba) ari igihembo gikwiye (ibikorwa bibi bakoraga)"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Kuko mu by’ukuri, batajyaga bizera ibarura"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ndetse banahinyuraga amagambo yacu cyane"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Kandi byose twarabibaruye mu nyandiko"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Ngaho nimusogongere (ingaruka z’ibikorwa byanyu bibi), kandi nta kindi tubongerera usibye ibihano"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Mu by’ukuri, abatinya Allah bazabona intsinzi (Ijuru)"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Ubusitani n’imizabibu"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "N’inkumi z’urungano (Huur-ul Ayn)"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Ndetse n’ibirahuri byuzuye (divayi idasindisha)"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Nta magambo adafite umumaro cyangwa ikinyoma bazumviramo"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "(Ibyo bizaba) ari ibihembo biturutse kwa Nyagasani wawe; impano ijyanye (n’ibikorwa byabo)"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Nyagasani w’ibirere n’isi n’ibiri hagati yabyo, Nyirimpuhwe. (Ku munsi w’imperuka), nta bushobozi bwo kugira icyo bamuvugisha bazaba bafite (keretse abishatse)"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Umunsi Roho (Malayika Jiburilu) n’abandi bamalayika bazahagarara ku murongo, ntibazavuga keretse uwo (Allah) Nyirimpuhwe azabihera uburenganzira, kandi akavuga ibiri ukuri"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Uwo munsi ni ukuri (uzaza nta gushidikanya). Bityo, ubishaka yakwiteganyiriza kwa Nyagasani we aho azashyikira"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Mu by’ukuri, twababuriye ibihano byegereje; umunsi umuntu azabona ibyo yakoze, naho umuhakanyi akazavuga ati \"Iyaba nari mbaye igitaka"
        }
    ]
}