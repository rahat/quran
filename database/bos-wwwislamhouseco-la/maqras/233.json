{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "O cemu oni jedni druge pitaju"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O Vijesti velikoj"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "o kojoj se oni razilaze"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Tako ne treba, oni ce saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "I opet, tako ne treba, oni ce saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Zar Zemlju posteljom nismo ucinili"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "i planine kao klinove"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "i vas kao parove stvorili"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "i vas san smirajem ucinili"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "i noc odjecom ucinili"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "i dan za privređivanje odredili"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "i iznad vas sedam cvrstih sazdali"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "i svjetiljku plamtecu postavili"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Mi iz kisnih oblaka vodu obilnu spustamo"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "da njome zito i bilje izvedemo"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i basce guste"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dan suda je, zaista, vec određen"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Dan kada ce u rog biti puhnuto, pa cete vi, sve skupina po skupina,dolaziti"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "i nebo ce biti otvoreno i mnogo ce kapija imati"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "i planine ce pokrenute biti i priviđenje ce postati"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Dzehennem ce, doista, zasjeda biti"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "obijesnima mjesto povratka"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "u kojem ce zauvijek ostati"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "u njemu nikakve svjezine nece osjetiti, ni pica okusiti"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "osim vrele vode i kapljevine"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "kazne prikladne"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Zaista se oni nisu nadali polaganju racuna"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "i potpuno laznim smatrali su Nase ajete i znakove"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "a Mi smo sve pobrojali i zapisali"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "“Pa zato kusajte, a Mi cemo vam patnju samo povecati!”"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Zaista, bogobojaznima mjesto spasa i uzivanja pripada"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "basce i vinogradi"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "i djevojke mlade, godina istih"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "i pehari puni"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Tamo prazne besjede i lazi nece slusati"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "to im je nagrada od Gospodara tvoga, dar dovoljni"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Od Gospodara nebesa i Zemlje i onoga sto je između njih, Svemilosnoga, Kome nece moci zboriti"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Na Dan kada Duh i meleci budu u redove poredani, oni nece govoriti"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "To je Istiniti dan, pa ko hoce, povratak Gospodaru svome prihvatit ce"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Mi vas, zaista, na patnju blisku upozoravamo, na Dan u kojem ce covjek djela ruku svojih vidjeti, a nevjernik uzviknuti: “Kamo srece da sam prasina bio!”"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Tako Mi onih koji cupaju grubo"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "i onih koji vade blago"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "i onih koji plove brzo"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "i onih koji bas prednjace"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "i onih koji odredbe uređuju"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "na Dan kada ono sto potresa potrese"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "za kojim ce doci sljedeci"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "srca taj dan bit ce uplasena"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "a pogledi njihovi ponizni"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Govore oni: “Zar cemo, zaista, u kaburovima biti vraceni u zivot"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Zar kad truhle kosti postanemo?”"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "I jos kazu: “E, to je, dakle, stetan povratak.”"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "A bit ce to samo naredba jedna"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "a oni vec na povrsini Zemlje"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Da li je doprla do tebe vijest o Musau"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "kad ga je Gospodar njegov u blagoslovljenoj, cistoj dolini Tuva zovnuo"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "“Idi faraonu, on se, doista, osilio"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "i reci: ‘Da li bi ti da se ocistis"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "da te Gospodaru tvome uputim, pa da Ga se bojis?’”"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "I onda mu je najveci znak pokazao"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "ali je on porekao i nije poslusao"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "vec se okrenuo i potrudio"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "i sabrao i povikao"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "“Ja sam gospodar vas najveci!”, on je rekao"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "I Allah ga je na drugom, a i na ovom svijetu kaznio"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "U tome ima pouka za svakoga koji se bude Allaha bojao"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "A sta je teze: vas ili nebo stvoriti? On ga je sazdao"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "svod njegov visoko digao i usavrsio"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "noci njegove mracnim, a dane svijetlim ucinio"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Poslije toga je Zemlju rasprostro"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "iz nje je vodu i pasnjake izveo"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "i planine nepomicnim ucinio"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "na uzivanje vama i stoci vasoj"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "A kad dođe Nevolja najveca"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "tada ce se covjek prisjetiti onoga sto je radio"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "i Oganj ce svakome ko vidi biti ukazan"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Pa, onom ko je osion bio"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "i zivot dunjalucki vise volio"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Oganj ce bas prebivaliste biti"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "A onom ko je od stajanja pred Gospodarom svojim strepio i dusu od"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Dzennet ce bas boraviste biti"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Pitaju te o Casu kijameta: “Kada ce se dogoditi?”"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Sta ti o spomenu njegovom znas"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Znanje o njemu kod Gospodara tvoga skoncava"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Tvoje upozorenje na njega prihvata samo onaj koji Ga se boji"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "a njima ce se uciniti, Dan taj, kada ga dozive, da su samo jedno"
        }
    ]
}