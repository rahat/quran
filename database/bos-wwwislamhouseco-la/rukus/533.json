{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Tako mi Sunca i svjetla njegova"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "i Mjeseca kada ga prati"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "i dana kada ga vidljivim ucini"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "i noci kada ga zakloni"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "i neba i Onoga Koji ga sazda"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "i Zemlje i Onoga Koji je rasprostrije"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "i duse i Onoga Koji je ispravnom stvori"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "pa je nadahnu da zna sta je razvrat, a sta bogobojaznost"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "uspio je onaj ko je ocisti"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "a izgubio je onaj ko je zapostavi"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Narod Semud je zbog obijesti svoje poricao"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Kad se jedan nesretnik između njih podigao"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allahov poslanik im je doviknuo: “Pazite na Allahovu devu i njen red"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "ali su ga u laz utjerali, pa su je zaklali – i Gospodar njihov ih je, zbog"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "ne bojeci se kakve ce posljedice"
        }
    ]
}