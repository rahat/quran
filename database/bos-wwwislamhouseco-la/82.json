{
    "chapter": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kada se nebo rascijepi"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "i kada zvijezde popadaju rastrkane"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "i kada mora budu prokuhljala pa se preliju"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "i kada kaburovi budu prevrnuti"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "svako ce saznati sta je pripremio, a sta propustio"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O covjece, sta te je obmanulo u vezi s tvojim Gospodarom Plemenitim"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Koji te je stvorio, pa ucinio da si skladan i da si uspravan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "i kakav je htio lik ti dao"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Naprotiv! Vi jos i Sud poricete"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "a nad vama bdiju cuvari"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "plemeniti pisari"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "koji znaju ono sto radite"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Cestiti ce, sigurno, u Uzitak"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "a razvratnici, sigurno, u Oganj"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Na Sudnjem danu u njemu ce gorjeti"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "i vise iz njega izbivati se nece"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "A sta ti znas sta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "I jos jednom: sta znas sta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Dan kada niko nikome nece moci nimalo pomoci, Dana tog vlast ce"
        }
    ]
}