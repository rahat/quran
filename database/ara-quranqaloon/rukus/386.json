{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "وَالصَّٰٓفَّٰتِ صَفّاࣰ‏"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "فَالزَّٰجِرَٰتِ زَجْراࣰ‏"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "فَالتَّٰلِيَٰتِ ذِكْراً"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "إِنَّ إِلَٰهَكُمْ لَوَٰحِدࣱۖ‏"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "رَّبُّ اُ۬لسَّمَٰوَٰتِ وَالْأَرْضِ وَمَا بَيْنَهُمَا وَرَبُّ اُ۬لْمَشَٰرِقِۖ‏"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "إِنَّا زَيَّنَّا اَ۬لسَّمَآءَ اَ۬لدُّنْيَا بِزِينَةِ اِ۬لْكَوَاكِبِۖ‏"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "وَحِفْظاࣰ مِّن كُلِّ شَيْطَٰنࣲ مَّارِدࣲۖ‏"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "لَّا يَسْمَعُونَ إِلَي اَ۬لْمَلَإِ اِ۬لْأَعْلَيٰ وَيُقْذَفُونَ مِن كُلِّ جَانِبࣲۖ‏"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "دُحُوراࣰۖ وَلَهُمْ عَذَابࣱ وَاصِبٌ"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "إِلَّا مَنْ خَطِفَ اَ۬لْخَطْفَةَ فَأَتْبَعَهُۥ شِهَابࣱ ثَاقِبࣱۖ‏"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "فَاسْتَفْتِهِمْ أَهُمْ أَشَدُّ خَلْقاً أَم مَّنْ خَلَقْنَاۖ إِنَّا خَلَقْنَٰهُم مِّن طِينࣲ لَّٰزِبِۢۖ‏"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "بَلْ عَجِبْتَ وَيَسْخَرُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "وَإِذَا ذُكِّرُواْ لَا يَذْكُرُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "وَإِذَا رَأَوْاْ ءَايَةࣰ يَسْتَسْخِرُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "وَقَالُواْ إِنْ هَٰذَا إِلَّا سِحْرࣱ مُّبِينٌ"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "أَٰ۟ذَا مِتْنَا وَكُنَّا تُرَاباࣰ وَعِظَٰماً إِنَّا لَمَبْعُوثُونَ"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "أَوْ ءَابَآؤُنَا اَ۬لْأَوَّلُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "قُلْ نَعَمْ وَأَنتُمْ دَٰخِرُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "فَإِنَّمَا هِيَ زَجْرَةࣱ وَٰحِدَةࣱ فَإِذَا هُمْ يَنظُرُونَۖ‏"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "وَقَالُواْ يَٰوَيْلَنَا هَٰذَا يَوْمُ اُ۬لدِّينِۖ‏"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "هَٰذَا يَوْمُ اُ۬لْفَصْلِ اِ۬لذِے كُنتُم بِهِۦ تُكَذِّبُونَۖ‏"
        }
    ]
}