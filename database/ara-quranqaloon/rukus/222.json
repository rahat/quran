{
    "rukus": [
        {
            "chapter": 15,
            "verse": 61,
            "text": "فَلَمَّا جَا ءَالَ لُوطٍ اِ۬لْمُرْسَلُونَ"
        },
        {
            "chapter": 15,
            "verse": 62,
            "text": "قَالَ إِنَّكُمْ قَوْمࣱ مُّنكَرُونَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 63,
            "text": "قَالُواْ بَلْ جِئْنَٰكَ بِمَا كَانُواْ فِيهِ يَمْتَرُونَ"
        },
        {
            "chapter": 15,
            "verse": 64,
            "text": "وَأَتَيْنَٰكَ بِالْحَقِّ وَإِنَّا لَصَٰدِقُونَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 65,
            "text": "فَاسْرِ بِأَهْلِكَ بِقِطْعࣲ مِّنَ اَ۬ليْلِ وَاتَّبِعْ أَدْبَٰرَهُمْ وَلَا يَلْتَفِتْ مِنكُمْ أَحَدࣱ وَامْضُواْ حَيْثُ تُؤْمَرُونَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 66,
            "text": "وَقَضَيْنَا إِلَيْهِ ذَٰلِكَ اَ۬لْأَمْرَ أَنَّ دَابِرَ هَٰؤُلَآءِ مَقْطُوعࣱ مُّصْبِحِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 67,
            "text": "وَجَا أَهْلُ اُ۬لْمَدِينَةِ يَسْتَبْشِرُونَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 68,
            "text": "قَالَ إِنَّ هَٰؤُلَآءِ ضَيْفِے فَلَا تَفْضَحُونِۖ‏"
        },
        {
            "chapter": 15,
            "verse": 69,
            "text": "وَاتَّقُواْ اُ۬للَّهَ وَلَا تُخْزُونِۖ‏"
        },
        {
            "chapter": 15,
            "verse": 70,
            "text": "قَالُواْ أَوَلَمْ نَنْهَكَ عَنِ اِ۬لْعَٰلَمِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 71,
            "text": "قَالَ هَٰؤُلَآءِ بَنَاتِيَ إِن كُنتُمْ فَٰعِلِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 72,
            "text": "لَعَمْرُكَ إِنَّهُمْ لَفِے سَكْرَتِهِمْ يَعْمَهُونَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 73,
            "text": "فَأَخَذَتْهُمُ اُ۬لصَّيْحَةُ مُشْرِقِينَ"
        },
        {
            "chapter": 15,
            "verse": 74,
            "text": "فَجَعَلْنَا عَٰلِيَهَا سَافِلَهَا وَأَمْطَرْنَا عَلَيْهِمْ حِجَارَةࣰ مِّن سِجِّيلٍۖ‏"
        },
        {
            "chapter": 15,
            "verse": 75,
            "text": "إِنَّ فِے ذَٰلِكَ لَأٓيَٰتࣲ لِّلْمُتَوَسِّمِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 76,
            "text": "وَإِنَّهَا لَبِسَبِيلࣲ مُّقِيمٍۖ‏"
        },
        {
            "chapter": 15,
            "verse": 77,
            "text": "إِنَّ فِے ذَٰلِكَ لَأٓيَةࣰ لِّلْمُؤْمِنِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 78,
            "text": "۞وَإِن كَانَ أَصْحَٰبُ اُ۬لْأَيْكَةِ لَظَٰلِمِينَۖ‏"
        },
        {
            "chapter": 15,
            "verse": 79,
            "text": "فَانتَقَمْنَا مِنْهُمْۖ وَإِنَّهُمَا لَبِإِمَامࣲ مُّبِينࣲۖ‏"
        }
    ]
}