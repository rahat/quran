{
    "maqras": [
        {
            "chapter": 53,
            "verse": 26,
            "text": "۞وَكَم مِّن مَّلَكࣲ فِے اِ۬لسَّمَٰوَٰتِ لَا تُغْنِے شَفَٰعَتُهُمْ شَئْاً إِلَّا مِنۢ بَعْدِ أَنْ يَّأْذَنَ اَ۬للَّهُ لِمَنْ يَّشَآءُ وَيَرْضَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 27,
            "text": "إِنَّ اَ۬لذِينَ لَا يُؤْمِنُونَ بِالْأٓخِرَةِ لَيُسَمُّونَ اَ۬لْمَلَٰٓئِكَةَ تَسْمِيَةَ اَ۬لْأُنثَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 28,
            "text": "وَمَا لَهُم بِهِۦ مِنْ عِلْمٍۖ إِنْ يَّتَّبِعُونَ إِلَّا اَ۬لظَّنَّۖ وَإِنَّ اَ۬لظَّنَّ لَا يُغْنِے مِنَ اَ۬لْحَقِّ شَئْاࣰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 29,
            "text": "فَأَعْرِضْ عَن مَّن تَوَلَّيٰ عَن ذِكْرِنَا وَلَمْ يُرِدْ إِلَّا اَ۬لْحَيَوٰةَ اَ۬لدُّنْيَاۖ‏"
        },
        {
            "chapter": 53,
            "verse": 30,
            "text": "ذَٰلِكَ مَبْلَغُهُم مِّنَ اَ۬لْعِلْمِۖ إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦۖ وَهْوَ أَعْلَمُ بِمَنِ اِ۪هْتَدَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 31,
            "text": "وَلِلهِ مَا فِے اِ۬لسَّمَٰوَٰتِ وَمَا فِے اِ۬لْأَرْضِ لِيَجْزِيَ اَ۬لذِينَ أَسَٰٓـُٔواْ بِمَا عَمِلُواْ وَيَجْزِيَ اَ۬لذِينَ أَحْسَنُواْ بِالْحُسْنَيۖ‏"
        },
        {
            "chapter": 53,
            "verse": 32,
            "text": "اَ۬لذِينَ يَجْتَنِبُونَ كَبَٰٓئِرَ اَ۬لْإِثْمِ وَالْفَوَٰحِشَ إِلَّا اَ۬للَّمَمَۖ إِنَّ رَبَّكَ وَٰسِعُ اُ۬لْمَغْفِرَةِۖ هُوَ أَعْلَمُ بِكُمْ إِذْ أَنشَأَكُم مِّنَ اَ۬لْأَرْضِ وَإِذْ أَنتُمْ أَجِنَّةࣱ فِے بُطُونِ أُمَّهَٰتِكُمْۖ فَلَا تُزَكُّواْ أَنفُسَكُمْۖ هُوَ أَعْلَمُ بِمَنِ اِ۪تَّقَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 33,
            "text": "أَفَرَٰ۬يْتَ اَ۬لذِے تَوَلَّيٰ"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "وَأَعْطَيٰ قَلِيلاࣰ وَأَكْدَيٰ"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "أَعِندَهُۥ عِلْمُ اُ۬لْغَيْبِ فَهْوَ يَرَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "أَمْ لَمْ يُنَبَّأْ بِمَا فِے صُحُفِ مُوسَيٰ"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "وَإِبْرَٰهِيمَ اَ۬لذِے وَفَّيٰ"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "أَلَّا تَزِرُ وَازِرَةࣱ وِزْرَ أُخْرَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "وَأَن لَّيْسَ لِلْإِنسَٰنِ إِلَّا مَا سَعَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "وَأَنَّ سَعْيَهُۥ سَوْفَ يُرَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "ثُمَّ يُجْزَيٰهُ اُ۬لْجَزَآءَ اَ۬لْأَوْفَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "وَأَنَّ إِلَيٰ رَبِّكَ اَ۬لْمُنتَهَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "وَأَنَّهُۥ هُوَ أَضْحَكَ وَأَبْكَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "وَأَنَّهُۥ هُوَ أَمَاتَ وَأَحْيَاۖ‏"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "وَأَنَّهُۥ خَلَقَ اَ۬لزَّوْجَيْنِ اِ۬لذَّكَرَ وَالْأُنثَيٰ"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "مِن نُّطْفَةٍ إِذَا تُمْنَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "۞وَأَنَّ عَلَيْهِ اِ۬لنَّشْأَةَ اَ۬لْأُخْرَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "وَأَنَّهُۥ هُوَ أَغْنَيٰ وَأَقْنَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "وَأَنَّهُۥ هُوَ رَبُّ اُ۬لشِّعْرَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "وَأَنَّهُۥ أَهْلَكَ عَاداࣰ اَ۬لُّاؤْلَيٰ"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "وَثَمُوداࣰ فَمَا أَبْقَيٰ"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "وَقَوْمَ نُوحࣲ مِّن قَبْلُۖ إِنَّهُمْ كَانُواْ هُمْ أَظْلَمَ وَأَطْغَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "وَالْمُؤْتَفِكَةَ أَهْوَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "فَغَشَّيٰهَا مَا غَشَّيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "فَبِأَيِّ ءَالَآءِ رَبِّكَ تَتَمَارَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "هَٰذَا نَذِيرࣱ مِّنَ اَ۬لنُّذُرِ اِ۬لْأُولَيٰۖ‏"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "أَزِفَتِ اِ۬لْأٓزِفَةُۖ‏"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "لَيْسَ لَهَا مِن دُونِ اِ۬للَّهِ كَاشِفَةٌۖ‏"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "أَفَمِنْ هَٰذَا اَ۬لْحَدِيثِ تَعْجَبُونَ"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "وَتَضْحَكُونَ وَلَا تَبْكُونَ"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "وَأَنتُمْ سَٰمِدُونَۖ‏"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "فَاسْجُدُواْ لِلهِ وَاعْبُدُواْۖ ۩"
        },
        {
            "chapter": 54,
            "verse": 1,
            "text": "اِ۪قْتَرَبَتِ اِ۬لسَّاعَةُ وَانشَقَّ اَ۬لْقَمَرُۖ‏"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "وَإِنْ يَّرَوْاْ ءَايَةࣰ يُعْرِضُواْ وَيَقُولُواْ سِحْرࣱ مُّسْتَمِرࣱّۖ‏"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "وَكَذَّبُواْ وَاتَّبَعُواْ أَهْوَآءَهُمْۖ وَكُلُّ أَمْرࣲ مُّسْتَقِرࣱّۖ‏"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "وَلَقَدْ جَآءَهُم مِّنَ اَ۬لْأَنۢبَآءِ مَا فِيهِ مُزْدَجَرٌۖ‏"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حِكْمَةُۢ بَٰلِغَةࣱۖ فَمَا تُغْنِ اِ۬لنُّذُرُۖ‏"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "فَتَوَلَّ عَنْهُمْۖ يَوْمَ يَدْعُ اُ۬لدَّاعِ إِلَيٰ شَےْءࣲ نُّكُرٍ"
        },
        {
            "chapter": 54,
            "verse": 7,
            "text": "خُشَّعاً أَبْصَٰرُهُمْ يَخْرُجُونَ مِنَ اَ۬لْأَجْدَاثِ كَأَنَّهُمْ جَرَادࣱ مُّنتَشِرࣱ‏"
        },
        {
            "chapter": 54,
            "verse": 8,
            "text": "مُّهْطِعِينَ إِلَي اَ۬لدَّاعِۦۖ يَقُولُ اُ۬لْكَٰفِرُونَ هَٰذَا يَوْمٌ عَسِرࣱۖ‏"
        }
    ]
}