{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "عَمَّ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ اِ۬لنَّبَإِ اِ۬لْعَظِيمِ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "اِ۬لذِے هُمْ فِيهِ مُخْتَلِفُونَۖ‏"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَيَعْلَمُونَ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَيَعْلَمُونَۖ‏"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "أَلَمْ نَجْعَلِ اِ۬لْأَرْضَ مِهَٰداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَالْجِبَالَ أَوْتَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَخَلَقْنَٰكُمْ أَزْوَٰجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَجَعَلْنَا اَ۬ليْلَ لِبَاساࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَجَعَلْنَا اَ۬لنَّهَارَ مَعَاشاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَيْنَا فَوْقَكُمْ سَبْعاࣰ شِدَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَجَعَلْنَا سِرَاجاࣰ وَهَّاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَأَنزَلْنَا مِنَ اَ۬لْمُعْصِرَٰتِ مَآءࣰ ثَجَّاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخْرِجَ بِهِۦ حَبّاࣰ وَنَبَاتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَجَنَّٰتٍ أَلْفَافاًۖ‏"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "إِنَّ يَوْمَ اَ۬لْفَصْلِ كَانَ مِيقَٰتاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "يَوْمَ يُنفَخُ فِے اِ۬لصُّورِ فَتَأْتُونَ أَفْوَاجاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَفُتِّحَتِ اِ۬لسَّمَآءُ فَكَانَتْ أَبْوَاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَسُيِّرَتِ اِ۬لْجِبَالُ فَكَانَتْ سَرَاباًۖ‏"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "إِنَّ جَهَنَّمَ كَانَتْ مِرْصَاداࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطَّٰغِينَ مَـَٔاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لَّٰبِثِينَ فِيهَا أَحْقَاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَّا يَذُوقُونَ فِيهَا بَرْداࣰ وَلَا شَرَاباً"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "إِلَّا حَمِيماࣰ وَغَسَاقاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَآءࣰ وِفَاقاًۖ‏"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "إِنَّهُمْ كَانُواْ لَا يَرْجُونَ حِسَاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَكَذَّبُواْ بِـَٔايَٰتِنَا كِذَّاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَےْءٍ أَحْصَيْنَٰهُ كِتَٰباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوقُواْ فَلَن نَّزِيدَكُمْ إِلَّا عَذَاباًۖ‏"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "إِنَّ لِلْمُتَّقِينَ مَفَازاً"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَآئِقَ وَأَعْنَٰباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَكَوَاعِبَ أَتْرَاباࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَكَأْساࣰ دِهَاقاࣰ‏"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَّا يَسْمَعُونَ فِيهَا لَغْواࣰ وَلَا كِذَّاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَآءࣰ مِّن رَّبِّكَ عَطَآءً حِسَاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبُّ اُ۬لسَّمَٰوَٰتِ وَالْأَرْضِ وَمَا بَيْنَهُمَاۖ اَ۬لرَّحْمَٰنُ لَا يَمْلِكُونَ مِنْهُ خِطَاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "يَوْمَ يَقُومُ اُ۬لرُّوحُ وَالْمَلَٰٓئِكَةُ صَفّاࣰ لَّا يَتَكَلَّمُونَ إِلَّا مَنْ أَذِنَ لَهُ اُ۬لرَّحْمَٰنُ وَقَالَ صَوَاباࣰۖ‏"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذَٰلِكَ اَ۬لْيَوْمُ اُ۬لْحَقُّۖ فَمَن شَآءَ اَ۪تَّخَذَ إِلَيٰ رَبِّهِۦ مَـَٔاباًۖ‏"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "إِنَّا أَنذَرْنَٰكُمْ عَذَاباࣰ قَرِيباࣰ يَوْمَ يَنظُرُ اُ۬لْمَرْءُ مَا قَدَّمَتْ يَدَٰهُ وَيَقُولُ اُ۬لْكَافِرُ يَٰلَيْتَنِے كُنتُ تُرَٰباَۢۖ‏"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "وَالنَّٰزِعَٰتِ غَرْقاࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "وَالنَّٰشِطَٰتِ نَشْطاࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "وَالسَّٰبِحَٰتِ سَبْحاࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "فَالسَّٰبِقَٰتِ سَبْقاࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "فَالْمُدَبِّرَٰتِ أَمْراࣰ‏"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "يَوْمَ تَرْجُفُ اُ۬لرَّاجِفَةُ"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "تَتْبَعُهَا اَ۬لرَّادِفَةُۖ‏"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "قُلُوبࣱ يَوْمَئِذࣲ وَاجِفَةٌ"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "أَبْصَٰرُهَا خَٰشِعَةࣱۖ‏"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "يَقُولُونَ أَٰ۟نَّا لَمَرْدُودُونَ فِے اِ۬لْحَافِرَةِ"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "إِذَا كُنَّا عِظَٰماࣰ نَّخِرَةࣰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "قَالُواْ تِلْكَ إِذاࣰ كَرَّةٌ خَاسِرَةࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "فَإِنَّمَا هِيَ زَجْرَةࣱ وَٰحِدَةࣱ‏"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "فَإِذَا هُم بِالسَّاهِرَةِۖ‏"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "هَلْ أَتَيٰكَ حَدِيثُ مُوسَيٰ"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "إِذْ نَادَيٰهُ رَبُّهُۥ بِالْوَادِ اِ۬لْمُقَدَّسِ طُوَيۖ‏"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "اَ۪ذْهَبْ إِلَيٰ فِرْعَوْنَ إِنَّهُۥ طَغَيٰ"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "فَقُلْ هَل لَّكَ إِلَيٰ أَن تَزَّكَّيٰ"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "وَأَهْدِيَكَ إِلَيٰ رَبِّكَ فَتَخْشَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "فَأَرَيٰهُ اُ۬لْأٓيَةَ اَ۬لْكُبْرَيٰ"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "فَكَذَّبَ وَعَصَيٰ"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "ثُمَّ أَدْبَرَ يَسْعَيٰ"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "فَحَشَرَ فَنَادَيٰ"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "فَقَالَ أَنَا رَبُّكُمُ اُ۬لْأَعْلَيٰ"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "فَأَخَذَهُ اُ۬للَّهُ نَكَالَ اَ۬لْأٓخِرَةِ وَالْأُولَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "إِنَّ فِے ذَٰلِكَ لَعِبْرَةࣰ لِّمَنْ يَّخْشَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَٰا۬نتُمْ أَشَدُّ خَلْقاً أَمِ اِ۬لسَّمَآءُۖ بَنَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمْكَهَا فَسَوَّيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغْطَشَ لَيْلَهَا وَأَخْرَجَ ضُحَيٰهَاۖ‏"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَالْأَرْضَ بَعْدَ ذَٰلِكَ دَحَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخْرَجَ مِنْهَا مَآءَهَا وَمَرْعَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَالْجِبَالَ أَرْسَيٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰعاࣰ لَّكُمْ وَلِأَنْعَٰمِكُمْۖ‏"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ اِ۬لطَّآمَّةُ اُ۬لْكُبْرَيٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوْمَ يَتَذَكَّرُ اُ۬لْإِنسَٰنُ مَا سَعَيٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ اِ۬لْجَحِيمُ لِمَنْ يَّرَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغَيٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ اَ۬لْحَيَوٰةَ اَ۬لدُّنْيَا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ اَ۬لْجَحِيمَ هِيَ اَ۬لْمَأْوَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنْ خَافَ مَقَامَ رَبِّهِۦ وَنَهَي اَ۬لنَّفْسَ عَنِ اِ۬لْهَوَيٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ اَ۬لْجَنَّةَ هِيَ اَ۬لْمَأْوَيٰۖ‏"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "۞يَسْـَٔلُونَكَ عَنِ اِ۬لسَّاعَةِ أَيَّانَ مُرْسَيٰهَاۖ‏"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكْرَيٰهَاۖ‏"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَيٰ رَبِّكَ مُنتَهَيٰهَاۖ‏"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَا أَنتَ مُنذِرُ مَنْ يَّخْشَيٰهَاۖ‏"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمْ يَوْمَ يَرَوْنَهَا لَمْ يَلْبَثُواْ إِلَّا عَشِيَّةً أَوْ ضُحَيٰهَاۖ‏"
        }
    ]
}