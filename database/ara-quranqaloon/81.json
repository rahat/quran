        {
            "chapter": 81,
            "verse": 16,
            "text": "اِ۬لْجَوَارِ اِ۬لْكُنَّسِ"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "وَاليْلِ إِذَا عَسْعَسَ"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "وَالصُّبْحِ إِذَا تَنَفَّسَ"
        },
        {
            "chapter": 81,
            "verse": 19,
