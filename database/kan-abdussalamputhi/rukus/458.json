        {
            "chapter": 52,
            "verse": 5,
            "text": "ಮತ್ತು ಜನ ಸಂಪನ್ನ ಆಲಯದಾಣೆ"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "ಎತ್ತರಗೊಳಿಸಲಾಗಿರುವ ಚಪ್ಪರದಾಣೆ"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "ಮತ್ತು ಭೋರ್ಗರೆಯುವ ಸಮುದ್ರದಾಣೆ"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "ನಿಮ್ಮ ಒಡೆಯನ ಶಿಕ್ಷೆಯು ಖಂಡಿತ ಬರಲಿದೆ"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "ಅದನ್ನು ತಡೆಯ ಬಲ್ಲವರು ಯಾರೂ ಇಲ್ಲ"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "ಆಕಾಶವು ಭೀಕರವಾಗಿ ತಲ್ಲಣಿಸುವ ದಿನ"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "ಮತ್ತು ಪರ್ವತಗಳು ಛಿದ್ರವಾಗುವ ದಿನ"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "(ಸತ್ಯವನ್ನು) ತಿರಸ್ಕರಿಸಿದವರಿಗೆ ಆ ದಿನ ವಿನಾಶವಿದೆ"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "(ಇಂದು) ಅವರು ಮೋಜಾಟಗಳಲ್ಲಿ ತಲ್ಲೀನರಾಗಿದ್ದಾರೆ"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "ಆ ದಿನ ಅವರನ್ನು ತಳ್ಳುತ್ತಾ ನರಕದೆಡೆಗೆ ಒಯ್ಯಲಾಗುವುದು"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "(ಮತ್ತು ಹೇಳಲಾಗುವುದು;) ಇದುವೇ, ನೀವು ತಿರಸ್ಕರಿಸುತ್ತಿದ್ದ ನರಕಾಗ್ನಿ"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "ಇದೇನು ಇಂದ್ರಜಾಲವೇ? ಅಥವಾ ನಿಮಗೇನೂ ಕಾಣಿಸುತ್ತಿಲ್ಲವೇ"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "ಇದರೊಳಗೆ ಪ್ರವೇಶಿಸಿರಿ. ನೀವಿನ್ನು ಸಹನೆ ತೋರಿದರೂ ಸಹನೆ ತೋರದಿದ್ದರೂ ನಿಮ್ಮ ಪಾಲಿಗೆ ಸಮಾನವಾಗಿರುತ್ತದೆ. ನಿಮಗಂತು, ನೀವು ಮಾಡುತ್ತಿದ್ದ ಕೃತ್ಯಗಳ ಪ್ರತಿಫಲವನ್ನಷ್ಟೇ ನೀಡಲಾಗುತ್ತಿದೆ"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "(ಅಂದು) ಧರ್ಮ ನಿಷ್ಠರು ಉದ್ಯಾನಗಳಲ್ಲಿ ಹಾಗೂ ಅನುಗ್ರಹದಲ್ಲಿರುವರು"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "ತಮಗೆ ತಮ್ಮ ಒಡೆಯನು ನೀಡಿದ್ದರಲ್ಲಿ ಸಂತುಷ್ಟರಾಗಿರುವರು. ಮತ್ತು ಅವರನ್ನು ಅವರ ಒಡೆಯನು ನರಕದ ಹಿಂಸೆಯಿಂದ ಸುರಕ್ಷಿತರಾಗಿಟ್ಟಿರುವನು"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "ನೀವು ಮಾಡಿದ್ದ ಕರ್ಮಗಳ ಫಲವಾಗಿ, (ಇಂದು) ಮನ ತುಂಬಾ ಉಣ್ಣಿರಿ ಮತ್ತು ಕುಡಿಯಿರಿ (ಎಂದು ಅವರೊಡನೆ ಹೇಳಲಾಗುವುದು)"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "ಅವರು ಸಾಲು ಸಾಲಾಗಿ ದಿಂಬುಗಳಿಗೆ ಒರಗಿ ವಿರಮಿಸುತ್ತಿರುವರು ಮತ್ತು ನಾವು ವಿಶಾಲ ಕಣ್ಣಿನ ‘ಹೂರ್’ಗಳನ್ನು ಅವರ ಜೊತೆಗಳಾಗಿಸಿರುವೆವು"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "ವಿಶ್ವಾಸಿಗಳಾಗಿದ್ದವರು ಮತ್ತು ವಿಶ್ವಾಸಿಗಳಾಗಿ ಅವರನ್ನು ಅನುಸರಿಸಿದ, ಅವರ ಸಂತತಿಗಳು – ಅವರನ್ನು ನಾವು ಅವರ ಸಂತತಿಗಳೊಂದಿಗೆ ಸೇರಿಸಿರುವೆವು – ಮತ್ತು ನಾವು ಅವರ ಕರ್ಮಗಳಲ್ಲಿ ಏನನ್ನೂ ಕಡಿತಗೊಳಿಸಲಾರೆವು. ಪ್ರತಿಯೊಬ್ಬನೂ ತನ್ನ ಕರ್ಮಗಳಿಗೆ ಪ್ರತಿಯಾಗಿ ಒತ್ತೆಯಾಳಾಗಿದ್ದಾನೆ"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "ನಾವು ಹಣ್ಣು ಹಂಪಲುಗಳನ್ನು ಮತ್ತು ಅವರು ಮೆಚ್ಚುವ ಮಾಂಸಾಹಾರವನ್ನು ಅವರಿಗೆ ಒದಗಿಸುತ್ತಿರುವೆವು"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "ಅಲ್ಲಿ ಅವರು (ಮೋಜಿಗಾಗಿ) ಪಾನಪಾತ್ರೆಗಳನ್ನು ಎಳೆದಾಡುವರು. ಯಾವುದೇ ಅನಗತ್ಯದ ಸಂಭಾಷಣೆಯಾಗಲಿ, ಪಾಪದ ಮಾತಾಗಲಿ ಅಲ್ಲಿ ಇರಲಾರದು"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "ಅವರ ಸೇವೆಗಾಗಿ, ಸುರಕ್ಷಿತ ಮುತ್ತುಗಳೋ ಎಂಬಂತಿರುವ ಬಾಲಕರು ಅವರ ಸುತ್ತ ತಿರುಗಾಡುತ್ತಿರುವರು"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "ಅವರು (ಸ್ವರ್ಗವಾಸಿಗಳು) ಪರಸ್ಪರರನ್ನು ಉದ್ದೇಶಿಸಿ ವಿಚಾರಿಸುವರು"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "ಅವರು ಹೇಳುವರು; ಹಿಂದೆ ನಾವು ನಮ್ಮವರ ನಡುವೆ ಭೀತರಾಗಿದ್ದೆವು"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "ಕೊನೆಗೆ, ಅಲ್ಲಾಹನು ನಮ್ಮ ಮೇಲೆ ದಯೆ ತೋರಿದನು ಮತ್ತು ನಮ್ಮನ್ನು ನರಕಾಗ್ನಿಯ ಶಿಕ್ಷೆಯಿಂದ ರಕ್ಷಿಸಿದನು"
        }
    ]
