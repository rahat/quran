{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "سوگند به فرستادگان شناخته شده (بر محور ایمان)؛"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "پس (آن) توفندگان توفانی؛"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "سوگند به پخش‌کنندگان پخش‌کردنی؛"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "پس به جدایی‌افکنان (آن) جدایی‌افکندنی‌؛"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "پس به افکنندگان یادواره‌ای‌؛"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "معذوران یا هشدار‌دهندگان‌"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "همواره آنچه وعده یافته‌اید بی‌چون شدنی است"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "پس هنگامی که ستارگان محو شوند،"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "و آن‌گاه که آسمان سوراخ شود،"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "و آن‌گاه که کوه‌ها از جا کنده شوند،"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "و آن‌گاه که پیامبران برایشان وقت مقرر گردد"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "برای چه روزی [:وقتشان] تأخیر شده است‌؟"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "برای روز جدایی‌"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "و تو را چه فهماند روز جدایی چیست‌؟"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "مگر پیشینیان را هلاک نکردیم‌؟"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "سپس از پی آنان دیگران را می‌بریم‌"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "با مجرمان چنان می‌کنیم"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "(در) چنان روزی وای بر تکذیب‌‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "مگر شما را از آبی بی‌مقدار نیافریدیم‌؟"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "پس آن را در جایگاهی استوار نهادیم،"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا اندازه‌ای معین،"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "پس اندازه‌گیری کردیم، پس چه خوب توانای اندازه‌گیریم"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "مگر زمین را پرنده‌ای تندپرواز و نگهبان ننهادیم‌؟"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "نگهبانِ سرنشینانش، چه زندگان و چه مردگان‌،"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "و کوه‌های سر بلند در آن نهادیم. و به شما آبی گوارا نوشانیدیم"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "رها شوید سوی همان چیزی که آن را تکذیب می‌کردید"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "رها شوید سوی سایه‌ای آتشین (که) سه گوشه دارد"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "نه سایه‌بان است و نه از شعله(ی آتش) بی‌نیاز می‌کند"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "(این آتش سیاه‌فام) چون کاخی (آتشبار) شراره می‌افکند،"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گویی به‌راستی شترانی زرد رنگند"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان‌"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "این روزی است که دم نمی‌زنند،"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "و رخصت (هم) نمی‌یابند تا پوزش بخواهند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "این (همان) روز جدایی است! شما و (جمله‌ی) پیشینیان را گرد آوردیم"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "پس اگر حیله‌ای دارید، با من حیله کنید"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "(در) چنان روزی وای بر تکذیب‌کنندگان"
        }
    ]
}