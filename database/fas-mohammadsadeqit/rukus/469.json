{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "هنگامی که (قیامت) واقع شونده وقوع یابد؛"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "در وقوعش هرگز گزافی نیست"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "پست‌کننده‌ای بالابرنده است"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "چون زمین با تکان و اضطراب سختی لرزانده شود؛"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "و کوه‌ها به گونه‌ای دهشت‌آور خُرد گردند؛"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "پس غباری پراکنده شوند؛"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "و شما سه دسته گردید"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "پس صاحبان برکت راستین؛ چیست صاحبان برکت‌؟"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "و صاحبان شوم و رذیلت؛ چیست صاحبان رذیلت‌؟"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "و سبقت‌گیرندگان (این سرا) همان سبقت‌گیرندگان (آن سرای)اند"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "همان مقرّبان (به خدای منان)"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "در باغستان‌های پرنعمت"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "(اینان) گروهی بسیار از پیشینیان،"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "و اندکی از پسینیان(اند)"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "بر تخت‌هایی بافته همچون زره"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "روبه‌روی هم بر آنها تکیه‌زنندگانند"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "نوجوانانی، جاودان بر گردشان می‌گردند"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "با جام‌ها و آبریزها و پیاله‌‌ای از باده‌ی ناب روان"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "(که) نه از آن سردرد گیرند و نه (آن را) پایان دهند"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "و میوه‌ای از هر چه همی‌پسندند"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "و (از) گوشت پرنده‌ای، هر چه اشتها کنند"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "و حوریانی چشم‌‌درشت"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "همانند مروارید (ناسفته‌ی) پنهان (در صدف)"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "حال آنکه پاداشی است به آنچه می‌کرده‌اند"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "در آنجا نه بیهوده‌ای می‌شنوند و نه (سخنی) گناه‌‌آلود با پی‌آمدی بد"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "(سخنی) بجز گفته‌ی سلامی سالم نیست"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "و صاحبان برکت و راستین. و چیست این صاحبان برکت و راستین؟"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "در (زیر) درختان کُناری بی‌خار"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "و درخت‌های موز که میوه‌اش خوشه‌خوشه روی هم انباشته است"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "و سایه‌ای پایدار (و کشش‌دار)"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "و آبی از بلندایی ریزان"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "و میوه‌ای فراوان"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "نه انقطاع یافته و نه ممنوع"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "و همخوابگانی بالا بلند در بلنداها(ی تخت‌ها)"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "ما بی‌گمان آنان را پدید آورده‌ایم، پدید آوردنی (بس نیکو)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "پس ایشان را دوشیزه و دست‌‌نخورده قرار دادیم"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "دارای تمامی زیبایی آشکار زنان؛ همسالان با شوهران"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "برای راستان و برکت یافتگان"
        }
    ]
}