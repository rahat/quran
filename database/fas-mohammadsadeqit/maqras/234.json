{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(ای پیمبر خوش‌خو! آن تندخو) چهره در هم کشید، و روی گردانید،"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "(هنگامی) که (آن) مرد نابینا سویش آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو را (ای بدخو) چه می‌فهماند؟ شاید (هم) او به پاکی گراید"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "یا یاد پذیرد، پس یادواره سودش دهد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما کسی که خود را بی‌نیاز پندارد"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "پس تو برایش بانگی لطیف و پربرگ‌وساز می‌نوازی"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و چیزی (هم) بر تو نیست که خود را پاک نگرداند"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن کس که شتابان نزدت آمد،"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "در حالی‌که (از خدا) می‌هراسد،"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "پس تو از او -با بی‌‌اعتنایی- سهل‌انگاری می‌کنی"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "زنهار (چنان نیست!) این (آیات) همواره یادواره‌‌ای است"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر کس بخواهد، آن را یاد کند"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در صحیفه‌هایی بس گرامی شده"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بالا بلندی بسی پاک‌شده"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست‌‌های فرستادگانی"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "ارجمندان و نیکوکاران‌"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "کشته شده است انسان! چه چیز او را به کفر و کفران واداشته؟"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "(خدا) او را از چه چیز آفریده‌؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه‌ای آفریدش‌. پس اندازه‌ای بخشیدش"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس او را فراسوی راه آسان گردانید"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "سپس میراندش، پس در گورش نهاد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "سپس هنگامی که بخواهد او را باز می‌گرداند"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "نه چنان است‌! هنوز آنچه را به او دستور داده، انجام نداده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس انسان باید به خوراک (روح و تن) خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "که همانا ما آب را به صورت بارشی تند فرو ریختیم"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "سپس زمین را با شکافتنی (شایسته) شکافتیم"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "پس در آن دانه‌ای رویانیدیم،"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و انگوری و سبزی‌ای،"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و (درخت) زیتونی و خرمایی،"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغ‌هایی انبوه،"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و میوه‌ای و چراگاهی"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "برای استفاده‌ی شما (مردمان) و دام‌هایتان"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "پس چون فریاد گوش‌خراش و دل‌خراش و جان‌ا‌فزا در رسد؛"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزی که آدمی از برادرش،"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادرش و پدرش،"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از همسرش و فرزندانش می‌گریزد،"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "(در آن روز) هر کس از آنان را کاری است، که او را تنها به خودش مشغول می‌دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "در چنان روزی چهره‌هایی درخشان است،"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "(که) خندان (و) و نویدگیرندگانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و چهره‌هایی است که بر آنها غبارهایی نشسته،"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "(و) آنها را تنگدستی و تنگی و خواری سخت پوشانده"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "ایشان، (هم)آنان کافران و فاجرانند"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "آن‌گاه که خورشید در هم پیچیده گردد"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "و آن‌گاه که ستارگان درخشان تیره شوند"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "و آن‌گاه که کوه‌ها به شدت حرکت داده شوند"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "و آنگاه که شتران ماده (به هنگام زادن) وانهاده شوند"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "و آن‌گاه که وحشیان - بدون برگشت- گرد آورده شوند"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "و آن‌گاه که دریاها به شدت به جوش آورده شوند"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "و آن‌گاه که نفوس، به هم در پیوسته شوند"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "و آن‌گاه که دختران (زنده) به گور شده پرسیده شوند،"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "(که) به کدامین گناه کشته شدند؟"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "و آن‌گاه که نامه‌ها (ی وحیانی و اعمال مکلفان) باز و آشکار گردند"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "و آن‌گاه که پوست آسمان - هم‌چون شتران- برکنده شود (و به حالت نخستین برگردد)"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "و آن‌گاه که آتش پرهیجان جهنم به شدت برافروخته گردد"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "و آن‌گاه که بهشتِ زینت‌یافته پیش آورده شود"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "هر نفسی بداند چه پیش آورده"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "پس سوگند نمی‌خورم به اختران بسی باز گردنده"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "روان‌شده‌ی پنهان‌شونده"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "سوگند به شب چون پس و پیش آید"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "و سوگند به صبح چون تنفس کند"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "که (قرآن) بی‌گمان سخن فرستاده‌ی بزرگواری است"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "نیرومندی (که) نزد صاحب عرش فرماندهی بامکنت و مکانت است"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "(در) آنجا (هم) مطاع (و هم) امین است"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "و (این) مصاحب و همنشین شما مجنون نیست"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "و همانا او خدا را در افقی روشنگر (با دیده‌ی بصیرت) دید"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "و او بر غیب بخیل نیست"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "و قرآن سخن شیطانی سنگ‌باران شده نیست"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "پس به کجا می‌روید؟"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "این قرآن به جز یادواره‌ای برای عالمیان نیست"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(بلکه) برای هر کس از شما که بخواهد (در سایه‌ی وحی) مستقیم گردد"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "و تا خدا، پروردگار جهانیان، نخواهد، (شما نیز) نخواهید خواست"
        }
    ]
}