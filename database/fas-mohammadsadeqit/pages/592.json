    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "بلکه (شما) زندگی دنیا را (بر آخرت) بر می‌گزینید"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "حال آنکه آخرت نیکوتر و پایدارتر است‌"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "بی‌گمان در صحیفه‌های گذشته (همچنان) این (وحی) موجود است؛"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "(در) صحیفه‌های ابراهیم و موسی"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آیا تو را داستان (حادثه‌ی فراگیر) بس پوشنده(ی چهره‌ها) رسیده است‌؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در چنان روزی، چهره‌هایی زبونند؛"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "تلاش‌کننده‌ی رنج‌برنده‌اند؛"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "آتشی بس سوزان را شعله زنند؛"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از چشمه‌ای داغ (و) جوشان لبریز، نوشانیده شوند؛"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "خوراکی جز آنچه به تضرعشان آوَرَد ندارند؛"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "(خوراکی که) نه فربه کند و نه از گرسنگی بی‌‌نیاز کند؛"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "در آن روزگاران چهره‌هایی شادابند؛"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "برای کوشش خود خشنودند؛"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشتی بالا و والایند؛"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "سخن بیهوده‌ای در آنجا نشنوند؛"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "در آن چشمه‌ای روان است؛"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "در آن تخت‌هایی بلند است؛"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و قدح‌هایی بی‌دسته نهاده شده؛"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و نازبالش‌هایی پهلوی هم، چیده شده؛"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرش‌‌هایی (زربفت)، پراکنده و گسترده"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آیا پس به شتر نمی‌نگرند، (که) چگونه آفریده شده‌؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و سوی آسمان که چگونه برافراشته شده‌؟"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و سوی کوه‌ها که چگونه (بر زمین) نصب شده‌اند؟"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمین که چگونه گسترده شده‌؟"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس یادآور باش که تو، تنها، یادآورنده‌ای (و)"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "بر آنان تسلّطی نداری"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر کسی که روی گردانید و کفر ورزید"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "پس خدا او را به بزرگ‌ترین عذاب تعذیب کند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "بی‌گمان بازگشت آنان تنها سوی ماست"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس حسابشان بی‌امان تنها بر ماست"
        }
    ]
