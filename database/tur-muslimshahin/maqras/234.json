{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "(Peygamber), ötürü yüzünü ekşitti ve geri döndü"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "âmânın kendisine gelmesinden"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "(Rasûlüm! Onun halini) sana kim bildirdi! Belki o temizlenecek"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "yahut öğüt alacak da o öğüt ona fayda verecek"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Kendini (sana) muhtaç görmeyene gelince"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sen ona yöneliyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Oysa ki onun temizlenip arınmasından sen sorumlu değilsin"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Fakat koşarak ve sana gelenle de"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "(Allah'tan) korkarak"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ilgilenmiyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Hayır, şüphesiz bunlar (ayetler ), bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen ondan ( Kur'an'dan ) öğüt alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Tertemiz kılınmış mukaddes sahifelerde (yazılı)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yüce makamlara kaldırılmış"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "katiplerin elleriyle ( yazılıp)"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "değerli ve itaatkar meleklerin"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Kahrolası insan! Ne inkârcıdır"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Allah onu neden yarattı"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Bir nutfeden (spermadan) yarattı da ona şekil verdi"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona yolu kolaylaştırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onun canını aldı ve kabre soktu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediği bir vakitte onu yeniden diriltir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır! (İnsan) Allah'ın emrettiğini yapmadı"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "İnsan, yediğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Şöyle ki: Yağmurlar yağdırdık"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı göz göz yardık da"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "oradan ekinler bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzüm bağları, sebzeler"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytin ve hurma ağaçları"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "iri ve sık ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyveler ve çayırlar"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "(Bütün bunlar) sizi ve hayvanlarınızı yararlandırmak içindir"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Kulakları sağır eden o ses geldiğinde"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "İşte o gün kişi kardeşinden kaçar"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Annesinden, babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "eşinden ve çocuklarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün, herkesin kendine yetip artacak bir derdi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün bir takım yüzler parlak"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "güleç ve sevinçlidir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "Yine o gün birtakım yüzleri de keder bürümüş"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "hüzünden kapkara kesilmiştir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte bunlar kâfirlerdir, günahkârlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş katlanıp dürüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar (kararıp) döküldüğünde"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar (sallanıp) yürütüldüğünde"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiğinde"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşî hayvanlar toplanıp bir araya getirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığında"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar (bedenlerle) birleştirildiğinde"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri toprağa gömülen kıza, sorulduğunda"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hangi günah sebebiyle öldürüldüğü"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "(Amellerin yazılı olduğu) defterler açıldığında"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gökyüzü sıyrılıp alındığında"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "cehennem tutuşturulduğunda"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "ve cennet yaklaştırıldığında"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kişi neler getirdiğini öğrenmiş olacaktır"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Hayır! (Gündüz) sinen"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "akıp giden, etrafı aydınlatan yıldızlara andolsun"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "Kararmaya yüz tuttuğunda geceye andolsun"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ağarmaya başladığında sabaha andolsun ki"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "itibarlı bir elçinin (Cebrail'in) getirdiği sözdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O (Kur'an), şüphesiz değerli, güçlü ve Arş'ın sahibi (Allah'ın) katında"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "O orada sayılan, güvenilen (elçi)'dir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Arkadaşınız (Muhammed) de mecnun değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki, onu (Cebrail'i) apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, gaybın bilgilerini (sizden) esirgemez"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "O lanetlenmiş şeytanın sözü de değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Hal böyle iken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O, herkes için, bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru yolda gitmek isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Âlemlerin Rabbi Allah dilemedikçe siz dileyemezsiniz"
        }
    ]
}