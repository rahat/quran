{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yüce Rabbinin adını tesbih (ve takdis) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp düzene koyan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "takdir edip yol gösteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "(topraktan) yeşil otu çıkarıp"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu kapkara bir sel artığına çeviren"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı) okutacağız; sen hiç unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Artık Allah'ın dilediği hariç, şüphesiz Allah, açığı ve gizleneni bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolaya muvaffak kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eğer öğüt fayda verirse öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) korkan öğütten yararlanacak"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kötü kimse ise öğütten kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "En büyük ateşe girecek olan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra o, ateşte ne ölür ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Temizlenen, kimse kuşkusuz kurtuluşa ermiştir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp O'na kulluk eden"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz (ey insanlar!) dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Ahiret daha hayırlı ve daha devamlı olduğu halde"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphesiz bu (anlatılanlar), önceki kitaplarda"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim ve Musa'nın kitaplarında da vardır"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(Rasûlüm!) Dehşeti her şeyi kaplayan kıyametin haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gün birtakım yüzler zelildir"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "durmadan çalışır, (fakat boşuna) yorulur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "kızgın ateşe girer"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Onlara kaynar su pınarından içirilir"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar için kuru dikenden başka yemek yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "o ise ne besler ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "O gün bir takım yüzler de vardır ki, mutludurlar"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "(dünyadaki) çabalarından hoşnut olmuşlardır"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "yüce bir cennettedirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş bir söz işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada (cennette) devamlı akan bir pınar"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "orada yükseltilmiş tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "konulmuş kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "sıra sıra dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "serilmiş halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "(İnsanlar) devenin nasıl yaratıldığına, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğün nasıl yükseltildiğine, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağların nasıl dikildiğine, bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yeryüzünün nasıl yayıldığına bir bakmazlar mı"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "O halde (Rasûlüm!) öğüt ver. Sen ancak öğüt vericisin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerinde bir zorba değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak yüz çevirip inkâr edene gelince"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "işte öylesini Allah en büyük azap ile cezalandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphesiz onların dönüşü sadece bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların sorguya çekilmesi de sadece bize aittir"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Fecre yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "on geceye (haccın on gecesine), yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "çifte ve teke, yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "(her şeyi karanlığı) ile örttüğü an geceye yemin ederim ki"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "bunlarda akıl sahibi için elbette birer yemin (değeri) vardır"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Görmedin mi, Rabbin ne yaptı Âd kavmine"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "direkleri (yüksek binaları) olan"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "ülkelerde benzeri yaratılmamış İrem şehrine"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "o vadide kayaları yontan Semûd kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "kazıklar (çadırlar, ordular) sahibi Firavun'a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Ki onların hepsi ülkelerinde azgınlık ettiler"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda kötülüğü çoğalttılar"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yüzden Rabbin onların üstüne azap kamçısı yağdırdı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Çünkü Rabbin (her an) gözetlemededir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Fakat insan, Rabbi kendisini imtihan edip de ikramda bulunduğunda ve bol nimet verdiğinde «Rabbim bana ikram etti» der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Onu imtihan edip rızkını daralttığında ise «Rabbim beni önemsemedi» der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır! Doğrusu siz yetime ikram etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "yoksulu yedirmeye birbirinizi teşvik etmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Haram helâl demeden mirası yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı aşırı biçimde seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ama yeryüzü parça parça döküldüğü"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Rabbin geldiği ve melekler saf saf dizildiği zaman (her şey ortaya çıkacaktır)"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "O gün cehennem getirilir, insan yaptıklarını birer birer hatırlar. Fakat bu hatırlamanın ne faydası var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "(İşte o zaman insan:) «Keşke bu hayatım için bir şeyler yapıp gönderseydim!» der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Artık o gün, Allah'ın edeceği azabı kimse edemez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O'nun vuracağı bağı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura kavuşmuş insan"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Sen O'ndan hoşnut, O da senden hoşnut olarak Rabbine dön"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "(Seçkin) kullarım arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "ve cennetime gir"
        }
    ]
}