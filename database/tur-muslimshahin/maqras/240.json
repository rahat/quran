{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "(İnsan) düşünmez mi ki, kabirlerde bulunanlar diriltilip dışarı atıldığı zaman"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Ve kalplerde gizlenenler ortaya konduğu zaman (hali ne olacak)"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Şüphesiz Rableri o gün onlardan tamamıyla haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Kapı çalan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o kapı çalan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O kapı çalanın ne olduğunu bilir misin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "İnsanların, ateşin etrafını sarmış pervaneler gibi olduğu"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "dağların da atılmış renkli yüne dönüştüğü gündür (o Kâria)"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "O gün kimin tartıları ameli ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "işte o, hoşnut edici bir yaşayış içinde olur"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartısı da hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "işte onun anası (yeri, yurdu) Hâviye' dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Nedir o (Hâviye) bilir misin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızgın ateş"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Çokluk kuruntusu sizi o derece oyaladı ki"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "nihayet kabirleri ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır! Yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Elbette yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Gerçek öyle değil ! Kesin bilgi ile bilmiş olsaydınız"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "(orada) mutlaka cehennem ateşini görürdünüz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Sonra ahirette onu çıplak gözle göreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Nihayet o gün (dünyada yararlandığınız) nimetlerden elbette ve elbette hesaba çekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asra yemin ederim ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "insan gerçekten ziyan içindedir"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Bundan ancak iman edip iyi ameller işleyenler, birbirlerine hakkı tavsiye edenler ve sabrı tavsiye edenler müstesnadır"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Arkadan çekiştirmeyi, yüze karşı eğlenmeyi âdet edinen herkesin vay haline"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "O ki, mal toplamış ve onu sayıp durmuştur"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "malının kendisini ebedi kılacağını zanneder"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır! Andolsun ki o, Hutame'ye atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "Hutame'nin ne olduğunu bilir misin"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah'ın, tutuşturulmuş, ateşidir"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "(Yandıkça) tırmanıp kalplerin ta üstüne çıkan"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "ve o vaziyette o (ateş) üzerlerine kapatılmıştır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Onlar (bu ateşin içinde) uzatılmış sütunlara bağlanmışlar"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbin fil sahiplerine neler etti, görmedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların kötü planlarını boşa çıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların üstüne ebâbil kuşlarını gönderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "O kuşlar, onların üzerlerine pişkin tuğladan yapılmış taşlar atıyordu"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Böylece Allah onları yenilip çiğnenmiş ekine çevirdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureyş’e kolaylaştırıldığı"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "evet, kış ve yaz seyahatleri onlara kolaylaştırıldığı için onlar"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "şu evin Rabbine kulluk etsinler"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Kendilerini açlıktan doyuran ve her çeşit korkudan emin kılan"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gördün mü"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "İşte o, yetimi itip kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya teşvik etmez"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Yazıklar olsun o namaz kılanlara ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "onlar namazlarını ciddiye almazlar"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gösteriş yapanlardır"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "hayra da mâni olurlar"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "(Rasûlüm!) Kuşkusuz biz sana Kevser'i verdik"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Şimdi sen Rabbin için namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Asıl sonu kesik olan, şüphesiz sana hınç besleyendir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "(Rasûlüm!) De ki: Ey kâfirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin tapmakta olduklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim taptığıma tapmıyorsunuz"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben de sizin taptıklarınıza asla tapacak değilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Evet, siz de benim taptığıma tapıyor değilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim de banadır"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah'ın yardımı ve zaferi gelip"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "de insanların bölük bölük Allah'ın dinine girmekte olduklarını gördüğün vakit"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbine hamdederek O'nu tesbih et ve O'ndan mağfiret dile. Çünkü O, tevbeleri çok kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb'in iki eli kurusun"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Kurudu da. Malı ve kazandıkları ona fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "O, alevli bir ateşte yanacak"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Odun taşıyıcı olarak karısı da (ateşe girecek)"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Ve boynunda hurma lifinden bükülmüş bir ip olduğu halde"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki : O, Allah birdir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah sameddir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "O, doğurmamış ve doğmamıştır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Onun hiçbir dengi yoktur"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki: Sabahın Rabbine sığınırım"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattığı şeylerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "karanlığı çöktüğü zaman gecenin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "düğümlere üfürüp büyü yapan üfürükçülerin şerrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ve kıskandığı vakit kıskanç kişinin şerrinden"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: İnsanların ilâhına sığınırım"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "İnsanların Melikine (mutlak sahip ve hakimine)"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "insanların Rabbine sığınırım"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "(insan Allah'ı andığında) pusuya çekilen şeytanının şerrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "insanların kalplerine vesvese sokan"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "cin ve insanlardan"
        }
    ]
}