{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gökyüzü yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "yıldızlar döküldüğü zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler birbirine katıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kabirlerin içindekiler dışarı çıkarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "insanoğlu (yapıp) gönderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! İhsanı bol Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Seni yaratıp seni düzgün ve dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "seni istediği bir şekilde birleştiren"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Bütün bunlara rağmen siz yine de dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Şunu iyi bilin ki üzerinizde bekçiler"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "değerli yazıcılar vardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "onlar, yapmakta olduklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler muhakkak cennette"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gününde oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar (kâfirler) oradan bir daha da ayrılmazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza günü nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Nedir acaba o ceza günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün hiçbir kimse başkası için bir şey yapamaz. O gün iş Allah'a kalmıştır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Hilekârlara yazıklar olsun"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "İnsanlardan alırken ölçüp tarttıklarında tam"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "onlara vermek için ölçüp tarttıklarında ise noksan yapan"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar düşünmezler mi ki, diriltilecekler"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Büyük bir günde (hesap vermek için) öyle bir gün ki"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "insanlar o günde âlemlerin Rabbinin huzurunda divan duracaklardır"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Doğrusu günahkârların yazısı, muhakkak Siccîn’de olmaktır"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Siccîn nedir, bilir misin"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "(o günahkarların yazısı ) Amellerin sayılıp yazıldığı bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "O gün vay haline yalancıların"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Ki onlar, ceza gününü yalan sayarlar"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Onu ancak hükümleri çiğneyen ve günaha dalan kimseler yalanlar"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Böyle birine âyetlerimiz okununca «Eskilerin masalları» derdi"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Hayır! Bilakis onların işlemekte oldukları (kötülükler) kalplerini kirletmiştir"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Hayır! Onlar şüphesiz o gün Rablerinden (O'nu görmekten) mahrum kalmışlardır"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Sonra onlar cehenneme girerler"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Sonra onlara: «İşte yalanlamış olduğunuz (cehennem) budur» denilir"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Hayır! Andolsun iyilerin kitabı İlliyyûn'dadır"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "İlliyyûn nedir, bilir misin"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "(O İlliyyûn'daki kitap) İçinde ameller kaydedilmiş bir kitaptır"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Kitabı, Allah’a yakın olanlar görür"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "İyiler kesinkes cennettedir"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Onlar orada koltuklar üzerinde etrafa bakarlar"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Onların yüzünde nimetlerin sevincini görürsün"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Kendilerine mühürlü hâlis bir içki sunulur"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Onun içiminin sonunda misk kokusu vardır. İşte yarışanlar ancak onda yarışsınlar"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Karışımı Tesnîm'dendir"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "(O Tesnîm Allah'a) Yakın olanların içecekleri bir kaynaktır"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Şüphesiz günahkârlar, (dünyada) iman edenlere gülerlerdi"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Onlarla karşılaştıklarında kaş göz hareketiyle alay ederlerdi"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Ailelerine döndüklerinde, (alaylarından dolayı) keyiflenerek dönerlerdi"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Müminleri gördüklerinde: «Şüphesiz bunlar sapıtmış» derlerdi"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Halbuki onlar, müminleri denetleyici olarak gönderilmediler"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "İşte o gün (ahirette) de iman edenler kâfirlere gülerler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Koltuklar üzerinde etrafa bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Kâfirler, yaptıklarının cezasını buldular mı! (Elbette buldular)"
        }
    ]
}