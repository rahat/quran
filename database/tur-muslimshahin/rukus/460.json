{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Battığı zaman yıldıza andolsun ki"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "arkadaşınız (Muhammed) sapmadı ve bâtıla inanmadı"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "o, arzusuna göre de konuşmaz"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "O, kendisine vahyedilen vahiyden başka bir şey değildir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Çünkü onu güçlü kuvvetli ve üstün yaratılışlı biri (Cebrail) öğretti"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "Asıl şekliyle doğruldu"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "Sonra en yüksek ufukta iken"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra (Muhammed'e) yaklaştı, derken daha da yaklaştı"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "O kadar ki (birleştirilmiş) iki yay arası kadar, hatta daha da yakın oldu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "Bunun üzerine Allah, kuluna vahyini bildirdi"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "(Gözleriyle) gördüğünü kalbi yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onun gördükleri hakkında şimdi kendisi ile tartışacak mısınız"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Önceden bir defa daha görmüştü"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "Andolsun onu, Sidretü’l Müntehâ'nın yanında"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "cennetü’l-me’vâ da onun yanındadır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "Sidre'yi kaplayan kaplamıştı"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Gözü kaymadı ve sınırı aşmadı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Andolsun o, Rabbinin en büyük âyetlerinden bir kısmını gördü"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gördünüz mü o Lât ve Uzzâ’yı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Ve üçüncüleri olan ötekini, Menât'ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Demek erkek size, dişi O’na öyle mi"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "O zaman bu, insafsızca bir taksim"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Bunlar (putlar), sizin ve atalarınızın taktığı isimlerden başka bir şey değildir. Allah onlar hakkında hiçbir delil indirmemiştir. Onlar ancak zanna ve nefislerinin arzusuna uyuyorlar. Halbuki kendilerine Rableri tarafından yol gösterici gelmiştir"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Yoksa insan, her arzu ettiği şeye sahip mi olacaktır"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Ahiret de dünya da Allah'ındır"
        }
    ]
}