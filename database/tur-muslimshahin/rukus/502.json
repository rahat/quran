{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Birisi, gelecek azabı istedi"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "İnkârcılara olan ve hiç kimsenin savamayacağı"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "yükselme derecelerinin sahibi olan Allah katından"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Melekler ve Rûh (Cebrail), oraya, miktarı (dünya senesi ile) ellibin yıl olan bir günde yükselip çıkar"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "(Rasûlüm!) Şimdi sen güzelce sabret"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "Doğrusu onlar, o azabı (ihtimalden) uzak görüyorlar"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "Biz ise onu yakın görmekteyiz"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "O gün gökyüzü, erimiş maden gibi olur"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "Dağlar da atılmış yüne döner"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "Dost, dostu sormaz"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "Günahkâr kimse ister ki, o günün azabından (kurtuluş için), oğullarını, hepsini fidye olarak versin de"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "karısını, kardeşini"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "kendisini koruyup barındıran"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "tüm ailesini ve yeryüzünde kim varsa, tek kendini kurtarsın"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Fakat ne mümkün! Bilinmeli ki, o (cehennem) alevlenen bir ateştir"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "Derileri kavurup soyar"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "Yüz çevirip geri dönen, kimseyi (kendine) çağırır"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "(servet) toplayıp yığan"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Gerçekten insan, pek hırslı (ve sabırsız) yaratılmıştır"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "Kendisine fenalık dokunduğunda sızlanır, feryat eder"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "Ona imkân verildiğinde ise pinti kesilir"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Ancak şunlar öyle değildir: Namaz kılanlar"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "ki onlar namazlarında devamlıdırlar (ihmal göstermezler)"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "mallarında, kalmışa belli bir hak tanıyanlar"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "isteyene ve (isteyemediği için) mahrum"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "ceza (ve hesap) gününün doğruluğuna inananlar"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "Rablerinin azabından korkanlar"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "ki Rablerinin azabı(na karşı) emin olunamaz"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "ırzlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "ancak eşlerine ve cariyelerine karşı müstesna; çünkü onlar kınanmaz"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "Bundan öteye (geçmek) isteyenler ise, onlar taşkınların ta kendileridir"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Emanetlerine ve ahitlerine riayet edenler"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "Şahitliklerini (dosdoğru) yapanlar"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "Namazlarını koruyanlar"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "işte bunlar, cennetlerde ağırlanırlar"
        }
    ]
}