{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbinin adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı alâk (rahim cidarına asılı hücre kümesi) tan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku! En büyük kerem sahibidir Rabbin"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Kalemle (yazmayı) öğreten Rabbin"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediklerini belleten"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Gerçek şu ki, insan azar"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini kendine yeterli görerek"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Kuşkusuz dönüş Rabbinedir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Men edeni gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Namaz kılarken bir kulu (Peygamber'i namazdan)"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Ne dersin, o (Peygamber) doğru yolda ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "yahut takvâyı emrediyorsa"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Ne dersin o (men eden, Peygamber'i) yalanlıyor ve doğru yoldan yüz çeviriyorsa"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "(Bu adam) Allah’ın, (yaptıklarını) gördüğünü bilmez mi"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Hayır, hayır! Eğer vazgeçmezse, derhal onu alnından (perçeminden)"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "o yalancı, günahkâr alından (perçemden) yakalarız (cehenneme atarız)"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "O, hemen gidip meclisini (kendi taraftarlarını) çağırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağıracağız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Hayır! Ona uyma! Allah’a secde et ve (yalnızca O’na) yaklaş"
        }
    ]
}