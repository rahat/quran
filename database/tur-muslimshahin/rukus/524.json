{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gökyüzü yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "yıldızlar döküldüğü zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "denizler birbirine katıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kabirlerin içindekiler dışarı çıkarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "insanoğlu (yapıp) gönderdiklerini ve (yapamayıp) geride bıraktıklarını bir bir anlar"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! İhsanı bol Rabbine karşı seni aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Seni yaratıp seni düzgün ve dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "seni istediği bir şekilde birleştiren"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Bütün bunlara rağmen siz yine de dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Şunu iyi bilin ki üzerinizde bekçiler"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "değerli yazıcılar vardır"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "onlar, yapmakta olduklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "İyiler muhakkak cennette"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "kötüler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Ceza gününde oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar (kâfirler) oradan bir daha da ayrılmazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Ceza günü nedir bilir misin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Nedir acaba o ceza günü"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün hiçbir kimse başkası için bir şey yapamaz. O gün iş Allah'a kalmıştır"
        }
    ]
}