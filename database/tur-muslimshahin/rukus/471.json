{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "Hayır! Yıldızların yerlerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Bilirseniz, gerçekten bu, büyük bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Değerli bir Kur'an'dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Şüphesiz bu, korunmuş bir kitapta bulunan"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona ancak temizlenenler dokunabilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "O, âlemlerin Rabbinden indirilmiştir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Şimdi siz, bu sözü mü küçümsüyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Allah’ın verdiği rızka karşı şükrü, onu yalanlamakla mı yerine getiriyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Hele can boğaza dayandığı zaman"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O vakit siz bakar durursunuz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "(O anda) biz ona sizden daha yakınız, ama göremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Madem ki ceza görmeyecekmişsiniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Onu (canı) geri çevirsenize, şayet iddianızda doğru iseniz"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Fakat (ölen kişi Allah'a) yakın olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "ona rahatlık, güzel rızık ve Naîm cenneti vardır"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eğer o sağdakilerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "«Ey sağdaki! Sana selam olsun!»"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Ama yalanlayan sapıklardan ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "İşte ona da kaynar sudan bir ziyafet vardır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve (onun sonu) cehenneme atılmaktır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Şüphesiz ki bu, kesin gerçektir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "O halde Yüce Rabbinin adıyla tesbîh et"
        }
    ]
}