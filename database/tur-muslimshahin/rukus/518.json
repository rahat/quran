{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Birbirlerine neyi soruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "(İnanıp inanmamakta) büyük haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ayrılığa düştükleri"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır! Anlayacaklar"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır! Onlar anlayacaklar"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Biz, yeryüzünü bir döşek yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Sizi çifter çifter yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu bir dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir örtü yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü de çalışıp kazanma zamanı yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Üstünüzde yedi kat sağlam göğü bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "(Orada) alev alev yanan bir kandil yarattık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Üst üste yığılıp sıkışan bulutlardan şarıl şarıl akan sular indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Size tohumlar, bitkiler; (ağaçları) yetiştirmek için"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "sarmaş dolaş olmuş bağlar ve bahçeler yetiştirmek için"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Şüphesiz hüküm günü vakit olarak belirlenmiştir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sûr'a üflendiği gün, bölük bölük Allah’a gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "gökyüzü açılır ve orada pek çok kapılar oluşur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "dağlar yürütülür, serap haline gelir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Şüphesiz, cehennem pusuda beklemektedir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınların barınağı olacak"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "(Azgınlar) orada çağlar boyu kalırlar"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "orada bir serinlik ya da (susuzluk gideren) bir içecek tatmazlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "kaynar su ve irin tadarlar"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Ancak (dünyada yaptıklarına) uygun karşılık olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Çünkü onlar hesap gününü (geleceğini) ummazlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Bizim âyetlerimizi yalanladıkça yalanlamışlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz ise her şeyi bir kitapta sayıp yazmışızdır"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Tadın! Bundan sonra yalnızca azabınızı arttıracağız"
        }
    ]
}