{
    "chapter": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burçlara sahip gökyüzüne, andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "geleceği bildirilmiş olan güne, andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "(o günde) tanıklık edene ve edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "hendeğe atılanlar öldürüldü"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Ateşle dolu (yakılarak)"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Onlar (yakanlar) da başlarına oturmuşlar"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "müminlere yapmakta oldukları işkenceyi seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Azîz ve Hamîd olan Allah'a iman ettikleri için intikam aldılar"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Onlardan, sırf, göklerin ve yerin mülkü kendisine ait olan, oysa ki Allah her şeyi görür"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Mümin erkeklere ve mümin kadınlara, dînden döndürmek için işkence edip sonra da tövbe etmeyenlere cehennem azabı ve (orada) yanma cezası vardır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "İman edip sâlih ameller işleyenlere ise, zemininden ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Şüphesiz Rabbinin yakalaması çok şiddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Bilin ki O, (kâinat yokken) ilk olarak yaratan, (ölümden sonra tekrar hayatı) geri getirendir"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, çok bağışlayan ve çok sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Şerefli Arş'ın sahibidir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediği şeyleri mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Orduların, haberi sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semûd'un (uğradıkları felâketin)"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu inkârcılar (gerçeği) yalanlayıp dururlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah onları arkalarından kuşatmıştır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Hakikatte o (yalanladıkları, aslı) şerefli Kur'an'dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuzda bulunan"
        }
    ]
}