{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Gökyüzüne ve târıka (sabah yıldızına ) yemin ederim"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarıkın ne olduğunu nereden bileceksin"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "(O, karanlığı) delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiç kimse yoktur ki üzerinde bir koruyucu, bir denetleyici bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "İnsan neden yaratıldığına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Atılan bir sudan yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "(O su) sırt ile göğüs kafesi arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "İşte Allah (başlangıçta bu şekilde yarattığı) insanı tekrar yaratmaya da kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizlenenlerin ortaya döküldüğü günde"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "insan için ne bir güç ne de bir yardımcı vardır"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Dönüş sahibi olan (yağmur yağdıran) göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "(nebat ile) yarılan yere yemin ederim ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kur’an, (hak ile bâtılı) ayıran bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O, asla bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kurarlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "ben de bir tuzak kurarım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Kâfirlere mühlet ver, onları biraz kendi hallerine bırak (pek yakında desteğimiz sana gelecek)"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yüce Rabbinin adını tesbih (ve takdis) et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Yaratıp düzene koyan"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "takdir edip yol gösteren"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "(topraktan) yeşil otu çıkarıp"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da onu kapkara bir sel artığına çeviren"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana (Kur'an'ı) okutacağız; sen hiç unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Artık Allah'ın dilediği hariç, şüphesiz Allah, açığı ve gizleneni bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolaya muvaffak kılacağız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde eğer öğüt fayda verirse öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "(Allah'tan) korkan öğütten yararlanacak"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Kötü kimse ise öğütten kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "En büyük ateşe girecek olan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "sonra o, ateşte ne ölür ne de yaşar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Temizlenen, kimse kuşkusuz kurtuluşa ermiştir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp O'na kulluk eden"
        }
    ]
}