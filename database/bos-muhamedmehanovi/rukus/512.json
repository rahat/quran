{
    "rukus": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kunem se Kijametskim danom"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "i kunem se dušom koja sebe kori"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Zar čovjek misli da kosti njegove nećemo sakupiti"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Svakako, a Mi možemo izravnati jagodice prstiju njegovih"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Ali, čovjek hoće da negira ono što pred njim je"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "pa pita: \"Kada će Kijametski dan biti"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Kada se pogled zbuni"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "i Mjesec pomrači"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "i Sunce i Mjesec smotaju, pa sjaj izgube"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "taj dan čovjek će povikati: \"Gdje da se bježi"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Ne, nema pribježišta"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Taj dan tvome je Gospodaru povratak"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "taj dan čovjek će o onome što je pripremio, a što je propustio, obaviješten biti"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Štaviše, čovjek sebe dobro zna - sam će protiv sebe svjedok biti"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "makar iznosio svoja opravdanja"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ne izgovaraj Kur'an jezikom svojim da bi ga što prije zapamtio"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Mi smo ga dužni sakupiti da bi ga ti čitao"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "A kada ga čitamo, ti prati čitanje njegovo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "a poslije, Mi smo ga dužni objasniti"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Ali, naprotiv, vi ovaj prolazni svijet volite"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "a onaj drugi - ahiret zapostavljate"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Taj dan neka lica blistava će biti"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "u Gospodara svoga će gledati"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Taj dan neka lica smrknuta će biti"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "znat će da će ih snaći velika nesreća"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Pazi, kada duša dopre do ključnih kostiju"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "i vikne se: \"Ko je vidar da vida"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "i on se uvjeri da je to čas rastanka"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "i noga se uz nogu savije"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "Taj dan će Gospodaru tvome privođenje biti"
        }
    ]
}