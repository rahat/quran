{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "O čemu oni jedni druge pitaju"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O Vijesti velikoj"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "o kojoj se oni razilaze"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Tako ne treba, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "I opet, tako ne treba, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Zar Zemlju kolijevkom nismo učinili"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "i planine kao klinove"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "i vas kao parove stvorili"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "i vaš san smirajem učinili"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "i noć odjećom učinili"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "i dan za privređivanje odredili"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "i iznad vas sedam čvrstih sazdali"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "i svjetiljku plamteću postavili"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Mi iz kišnih oblaka vodu obilnu spuštamo"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "da njome žito i bilje izvedemo"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i bašče guste"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dan suda je, zaista, već određen"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Dan kada će u rog biti puhnuto, pa ćete vi, sve skupina po skupina dolaziti"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "i nebo će biti otvoreno i mnogo će kapija imati"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "i planine će pokrenute biti i priviđenje će postati"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Džehennem će, doista, zasjeda biti"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "obijesnima mjesto povratka"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "u kome će zauvijek ostati"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "u njemu nikakve svježine neće osjetiti, ni pića okusiti"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "osim vrele vode i ledenohladne i smrdljive kapljevine"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "kazne prikladne"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Zaista se oni nisu nadali polaganju računa"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "i potpuno lažnim smatrali su Naše ajete i znakove"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "a Mi smo sve pobrojali i zapisali"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Pa zato kušajte, a Mi ćemo vam patnju samo povećati"
        }
    ]
}