{
    "chapter": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onu hic kimse yalanlayamayacaktır"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O kimini alcaltır, kimini de yukseltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yeryuzu siddetle sarsıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca olup"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Toz halinde bosluga dagıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler uc gruba ayrıldıgınız zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Defterleri sagdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Defterleri soldan verilenler. Vay gele baslarına"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve onculer, hep onden gidenler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allah´a yakındırlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Bol nimetli cennetlerdedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Cogu oncu ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın islemeli tahtlarda otururlar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı olarak bu tahtlara kurulurlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hic olmeyecek genc hizmetciler aralarında dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gurul gurul akan bir cesmeden doldurulmus testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu icki ne baslarını agrıtır, ne de sarhos eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoslarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Istahla yiyecekleri kus etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gozlu huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karsılıgı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos ve ne gunah icerikli bir soz isitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Isittikleri tek soz «selam, selam» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sagdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir agacları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yuklu muz agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz golgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Surekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yuksek dosekler uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine asık ve onlarla aynı yasta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sagdan verilenler icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların bazıları eski ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bazıları da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Defterleri soldan verilenler. Vay gele baslarına"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Onlar gozeneklerine isleyen kavurucu bir ruzgar onunde ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kara ve bogucu bir dumanın golgesi altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serinligi ve ne de oksayıcılıgı var"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar vaktiyle varlık icinde azıtmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahı (Allah´a ortak kosmayı) islemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "«Olup toprak ve kemik yıgını olduktan sonra, biz yeniden mi diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Eski atalarımız da mı?» diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Oncekiler de, sonrakiler de.»"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belirlenmis bir gunun randevusunda bir araya getirileceklerdir"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "Sonra siz, ey sapık yalanlayıcılar"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "Size kesinlikle Zakkum agacının meyvası yedirilecektir"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "Onunla karınlarınız doldurulacaktır"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "Uzerine de kaynar su iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "Onu, ictikce susayan develer gibi iceceksiniz"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "Onlar hesap gunu iste boyle agırlanacaklardır"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Sizleri yaratan biziz, bunu onaylasanıza"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Fıskırttıgınız meniyi goruyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "Onu siz mi yaratıyorsunuz, yoksa onu yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Olumu aranızda planlayan biziz. Hic kimse bizim onumuze gecemez"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "Amacımız benzerlerinizi yerinize gecirmek ve hepinizi bilmediginiz bir alemde yeniden diriltmektir"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Ilk yaratılmayı bildiniz. Bunu dusunup ders alsanıza"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Ektiginiz tohumu goruyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Onu siz mi bitiriyorsunuz, yoksa onu bitiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Eger isteseydik o ekinlerinizi ot kırıntılarına donustururduk de sasakalırdınız"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "Derdiniz ki; «Biz borca battık.»"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "Daha dogrusu her seyimizi kaybettik"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Ictiginiz suyu goruyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "Onu siz mi buluttan yere indiriyorsunuz, yoksa onu indiren biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Eger isteseydik onu acı yapardık. Sukretsenize"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Tutusturdugunuz atesi goruyor musunuz"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "Onun agacını siz mi yaratıyorsunuz, yoksa onu yaratan biz miyiz"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Biz onu hem dusundurucu, ibret verici bir uyarıcı, hem de ihtiyacı olanlar icin bir yararlanma kaynagı olarak yarattık"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "Oyleyse yuce Rabbinin adını noksanlıklardan tenzih et"
        },
        {
            "chapter": 56,
            "verse": 75,
            "text": "Yıldızların yorungeleri uzerine yemin ederim ki"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "Keske bilseniz bu ne buyuk bir yemindir"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Bu kitap, yuce Kur´an´dır"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "Aslı (Allah katındaki) bir kitapta saklıdır"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Ona sadece tertemiz kimseler el surebilir"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "O, Allah tarafından indirilmistir"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "Simdi siz bu sozu bu mesajı hafife mi alıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "Yalanlamayı kendinize rızık ve ileriye donuk birikim mi yapıyorsunuz"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "Canın bogaza dayandıgı an var ya"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "O sırada sizler gozlerinizi o can cekisen adama dikersiniz"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "Biz ona sizden daha yakınız, ama siz goremezsiniz"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "Eger yeniden diriltilip hesaba cekilmeyecekseniz"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "Eger soylediginiz dogru ise o cıkmak uzere olan canı geriye dondursenize"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "Eger olmek uzere olan kisi Allah´a yakın olanlardan ise"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "Esenlik, hos kokulu cicekler ve bol nimetli cennet onu bekliyor"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "Eger adam defteri sagdan verileceklerden ise"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "Defterlerini sagdan alacak olan arkadaslarının selamı var sana"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "Eger adam sapık bir inkarcı ise"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "O kaynar su sunularak agırlanır"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "Ve cehenneme atılır"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Bu kesin gercektir"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Oyleyse yuce Rabbinin adını noksanlıklardan tenzih et"
        }
    ]
}