{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Birbirlerine neyi soruyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O buyuk haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar onda ayrılıga dustuler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır, yakında bilecekler"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryuzunu bir besik"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dagları da onun icin birer direk kıldık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi cift cift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme vakti yaptık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir ortu yaptık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gunduzu geciminiz icin calısıp kazanma zamanı yaptık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Ustunuze yedi saglam gok bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Oraya parlak kandiller astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkısan bulutlardan sarıl sarıl su indirdik ki"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Onunla taneler, bitkiler ve birbirine sarmas dolas olmus agaclı bahceler cıkaralım"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Onunla taneler, bitkiler ve birbirine sarmas dolas olmus agaclı bahceler cıkaralım"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Muhakkak ki hukum gunu, belirlenmis bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a uflendigi gun, boluk boluk Allah´a gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "O gun gokyuzu acılır ve orada pek cok kapılar olusur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Daglar yurutulur, serap haline gelir"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Cehennem de sucluları gozetleyip durmaktadır"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Orası azgınların varacagı yerdir"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Orada sonsuza dek kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada ne bir serinlik ne de icilecek bir sey tadarlar"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Yalnız kaynar su ve irin icerler"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "Yaptıklarına uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Cunku onlar bir hesab gorulecegini ummuyorlardı"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ayetlerimizi de tamamen yalanlamıslardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Biz de herseyi sayıp yazmıstık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Simdi tadın, artık size azabtan baska bir seyi artırmıyacagız"
        }
    ]
}