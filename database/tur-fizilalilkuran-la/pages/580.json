{
    "pages": [
        {
            "chapter": 76,
            "verse": 26,
            "text": "Gecenin bir bolumunde O´na secde et, geceleri O´nu uzun uzun tesbih et"
        },
        {
            "chapter": 76,
            "verse": 27,
            "text": "Bu adamlar su gecici dunyayı severler ve onlerindeki o zorlu gunu gozardı ederler"
        },
        {
            "chapter": 76,
            "verse": 28,
            "text": "Onları yaratan ve vucutlarına bicim veren biziz. Istedigimiz zaman onları benzerleri ile degistiririz"
        },
        {
            "chapter": 76,
            "verse": 29,
            "text": "Bu bir hatırlatmadır. Isteyen Rabbine giden yolu tutar"
        },
        {
            "chapter": 76,
            "verse": 30,
            "text": "Allah dilemedikce siz bir sey dileyemezsiniz. Hic kuskusuz Allah herseyi bilir ve her isi yerinde yapar"
        },
        {
            "chapter": 76,
            "verse": 31,
            "text": "O dilediklerini rahmetinin kapsamı altına Alır. Zalimlere gelince O, onlar icin acıklı bir azap hazırlamıstır"
        },
        {
            "chapter": 77,
            "verse": 1,
            "text": "Dalga dalga salınanlara"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Kasırga gibi esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Her yana dagıtanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Dogruyu egriden kesin cizgilerle ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ilahi mesajı peygamberlere iletenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ya bahaneleri bosa cıkarmak ya da uyarmak amacı ile"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size soz verilen kıyamet kesinlikle kopacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar karardıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok parcalandıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar ufalanıp dagıldıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Peygamberlerin tanıklık sıraları geldigi zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bu tanıklık hangi gune ertelendi"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hukum gunune"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hukum gununun ne oldugunu biliyor musun"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Onceki inkarcı toplumları yoketmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonraki inkarcıları da katarız onlara"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Iste biz gunahkarlara boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gun inkarcıların vay haline"
        }
    ]
}