    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler patladıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına cıktıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi one, neyi geriye aldıgını ogrenir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Seni engin kerem sahibi Rabbine, karsı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O, seni yaratan, belini dogrultan ve seni dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi bicimde sana sekil veren Rabbine"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Aksine siz dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Suphesiz basınızda bekciler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Serefli katipler"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Suphesiz iyiler cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gunu oraya surulurler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan bir daha cıkamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gununun ne oldugunu bilir misin sen"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Hem din gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun kimsenin kimseye faydası olmaz. O gun yetki sadece Allah´ındır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Olcu ve tartıda hile yapanların vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Onlar insanlardan bir sey olcup aldıkları zaman eksiksiz alırlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Kendileri onlara birsey olctukleri veya tarttıkları zaman (olcu ve tartıyı) eksik verirler"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, tekrar dirileceklerini sanmıyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gun"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Insanların alemlerin Rabbinin huzurunda durdukları gun"
        }
    ]
}