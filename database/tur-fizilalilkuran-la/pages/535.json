{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hic olmeyecek genc hizmetciler aralarında dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gurul gurul akan bir cesmeden doldurulmus testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu icki ne baslarını agrıtır, ne de sarhos eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoslarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Istahla yiyecekleri kus etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gozlu huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karsılıgı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos ve ne gunah icerikli bir soz isitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Isittikleri tek soz «selam, selam» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sagdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir agacları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yuklu muz agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz golgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Surekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yuksek dosekler uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine asık ve onlarla aynı yasta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sagdan verilenler icin"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Bunların bazıları eski ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "Bazıları da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "Defterleri soldan verilenler. Vay gele baslarına"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Onlar gozeneklerine isleyen kavurucu bir ruzgar onunde ve kaynar su icinde"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "Kara ve bogucu bir dumanın golgesi altındadırlar"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "Ne serinligi ve ne de oksayıcılıgı var"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Cunku onlar vaktiyle varlık icinde azıtmıslardı"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "Buyuk gunahı (Allah´a ortak kosmayı) islemekte ısrar ediyorlardı"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "«Olup toprak ve kemik yıgını olduktan sonra, biz yeniden mi diriltilecegiz"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "Eski atalarımız da mı?» diyorlardı"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "De ki: «Oncekiler de, sonrakiler de.»"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "Belirlenmis bir gunun randevusunda bir araya getirileceklerdir"
        }
    ]
}