{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Dalga dalga salınanlara"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Kasırga gibi esip savuranlara"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Her yana dagıtanlara"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Dogruyu egriden kesin cizgilerle ayıranlara"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Ilahi mesajı peygamberlere iletenlere andolsun"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Ya bahaneleri bosa cıkarmak ya da uyarmak amacı ile"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Size soz verilen kıyamet kesinlikle kopacaktır"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Yıldızlar karardıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Gok parcalandıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Daglar ufalanıp dagıldıgı zaman"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Peygamberlerin tanıklık sıraları geldigi zaman"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Bu tanıklık hangi gune ertelendi"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Hukum gunune"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Hukum gununun ne oldugunu biliyor musun"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Onceki inkarcı toplumları yoketmedik mi"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Sonraki inkarcıları da katarız onlara"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Iste biz gunahkarlara boyle yaparız"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi basit bir sıvı damlasından yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Sonra o sıvı damlasını korunaklı bir yuvaya yerlestirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belirli bir surenin sonuna kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Biz o sıvı damlacıgın gelismesini asamalı bir plana bagladık. Biz ne guzel plan yaparız"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz yeryuzunu barınak yapmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Oluler icin de diriler icin de"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yuksek daglar yaratmadık ve size tatlı sular icirmedik mi"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Simdi inkar ettiginiz yere kosunuz"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Uc catallı golgeye kosunuz"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Serinlik saglamayan ve alevden korumayan golgeye"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O saray gibi kocaman kıvılcımlar sacar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Her biri birer sarı deve gibi kıvılcımlar"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bugun onların konusamayacakları bir gundur"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Ozur dilemelerine de izin verilmez"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Bugun sizi ve sizden oncekileri biraraya getirdigimiz bir hukum gunudur"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eger bana karsı oynayacagınız bir oyununuz varsa haydi, oynayın bakalım"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Kotuluklerden sakınanlara gelince anlar agac golgeleri altında ve pınar baslarındadırlar"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Canlarının cektigi meyvalarla basbasadırlar"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yapmıs oldugunuz iyiliklerin karsılıgı olarak simdi afiyetle yiyiniz ve iciniz"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Biz iyilik yapanları, Iste boyle odullendiririz"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Simdi yiyiniz, azıcık safa surunuz, sizler suclusunuz"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara «rukua varın» dendiginde rukua varmazlar"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "O gun inkarcıların vay haline"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Onlar Kur´an´a inanmadıktan sonra hangi soze inanacaklar"
        }
    ]
}