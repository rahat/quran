{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yuce adını takdis et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O yaratan ve duzeltendir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Olculeri belirleyip yolunu gosterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yemyesil meraları bitirendir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları kupkuru cope cevirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ey Muhammed! Sana Kur´an´ı biz okutacagız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın diledigi baska. O acıgı da bilir gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yolu tutmaga muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde hatırlatmak fayda verirse hatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah´tan korkan, ogut alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kacacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O en buyuk atese yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun icinde ne olur ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu mutluluga ermistir arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz su dunya hayatını ustun tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu hukum elbette ilk sahifelerde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ey insanoglu! Herseyi kaplayacak kıyametin haberi sana gelmedi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "O gun birtakım yuzler zillete burunmustur"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor isler altında bitkin dusmustur"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Yakıcı atese yaslanırlar"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan icirilirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Onlar icin kuru dikenden baska yiyecek de yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Ne semirtir, ne de aclıgı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Inanmıs olanların yuzleri, o gun, pırıl pırıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Yaptıklarından hosnutturlar"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yuksek bir bahcededirler"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada bos soz isitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir kaynak vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yukseltilmis tahtlar vardır"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Konulmus kadehler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Dizilmis yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmis halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Bu insanlar bakmıyorlar mı, develerin nasıl yaratıldıgına"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Gogun nasıl yukseltildigine"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dagların nasıl dikildigine"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yerin nasıl yayıldıgına"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ey Muhammed! Sen ogut ver. Cunku sen ancak ogut verensin"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların uzerinde zorlayıcı degilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yuz cevirir, inkar ederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah onu en buyuk azaba ugratır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Donusleri bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra onların hesabını gormek bize duser"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun tanyerinin agarmasına"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "On geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Cifte ve teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gitmekte olan geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Ki bunlarda akıl sahipleri icin birer yemin degeri var"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Gormedin mi Rabbin ne yaptı Ad kavmine"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Yuksek sutunlu Irem´e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki ulkeler arasında onun esi yaratılmamıstı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Vadide kayaları oyarak evler yapan Semud kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "ve kazıklar sahibi Firavun´a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Bunlar ulkelerinde azmıslardı"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Oralarda cok kotuluk etmislerdi"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu yuzden Rabbin onların uzerine azab kırbacını carptı"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Cunku Rabbin her an gozetlemektedir"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Rabbin denemek icin bir insana iyilik edip, nimet verdigi zaman o: «Rabbim beni serefli kıldı» der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Fakat onu sınamak icin rızkını daraltıp bir olcuye gore verdigi zaman: «Rabbim bana hor baktı» der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır yetime karsı comert davranmıyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmek konusunda birbirinizi ozendirmiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Size kalan mirası hak gozetmeden yiyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı pek cok seviyorsunuz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Hayır, yer carpılıp paralandıgı zaman"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizilip, Rabbinin buyrugu gelince"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Ki cehennem de o gun getirilmistir. Iste o gun insan anlar, ancak artık anlamanın kendisine ne faydası var"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "O zaman insan, ´Ah keske ben bu hayatım icin onceden iyi isler yapıp gonderseydim´ der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gun O´nun yapacagı azabı kimse yapamaz"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O´nun vuracagı bagı hic kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzura eren nefis"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Razı edici ve razı edilmis olarak Rabbine don"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Iyi kullarım arasına katıl"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Cennetime gir"
        }
    ]
}