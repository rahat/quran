{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gok yarıldıgı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Rabbini dinleyip O´na yarasır sekilde boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer uzatılarak dumduz yapıldıgı"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "Icindekileri dısarı atıp bosaldıgı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbine yarastıgı sekilde O´na kulak verip boyun egdigi zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insanoglu! Sen Rabbine kavusuncaya kadar calısıp cabalayacak, sonunda O´na kavusacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "O zaman kimin kitabı sagından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "O kolay bir hesaba cekilecek"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve sevincli olarak ailesine donecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin kitabı da sırtının arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "O, olumu cagıracak"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve cılgın alevli cehenneme girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Cunku o, dunyada ailesi arasında sevinc icinde idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "Rabbine hic donmeyecegini sanmıstı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Aksine Rabbi onu gormekte idi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Aksamın alaca karanlıgına"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve gecenin icinde barındırdıgına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Dolunay halindeki Ay´a andolsun ki"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Suphesiz siz bir durumdan digerine ugrayacaksınız"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara ne oluyor da inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Kendilerine Kur´an okundugu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Aksine kafir olanlar yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Oysa Allah onların icinde gizlediklerini biliyor"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onları acıklı bir azab ile mujdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Iman edenler ve salih ameller isleyenler haric. Onlar icin bitip tukenmeyen mukafat vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Burcları olan goge"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Vaad edilen gune"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Sahitlik edene ve sahitlik edilene andolsun ki"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Hendekleri hazırlayanların canı cıksın"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Bol yakıtı olan atesi oralara dolduranların"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani onlar hendeklerin basında oturuyorlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Muminlere yaptıkları iskenceleri seyrediyorlardı"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Muminlerden oc almalarının tek sebebi aziz, ovguye layık Allah´a inanmalarıydı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O Allah ki goklerin ve yerin sahibi olan Allah´a. Allah herseye sahittir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Inanmıs erkek ve kadınlara iskence edip, sonra yaptıklarına tevbe etmeyenler, var ya. Suphesiz onlar icin cehennem azabı vardır. Yakıp kavuran azap ta onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "inananlar ve iyi isler yapanlar icin de altlarından ırmaklar akan cennetler vardır. Iste buyuk kurtulus budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Dogrusu Rabbinin yakalaması siddetlidir"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Ilk yaratan ve tekrar yaratacak olan da O´dur"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O, bagıslayan ve sevendir"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Ars´ın sahibidir, yucedir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Istedigini yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Sana orduların haberi geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud´a ait orduların"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Dogrusu kafirler bir yalanlama icindedirler"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Halbuki Allah onları artlarından kusatmıstır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Aksine, o serefli bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Korunan bir levhada (Levh-i Mahfuz´da)´dır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Goge ve tarıka and olsun"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Tarıkın ne oldugunu bilir misin sen"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O karanlıgı delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hicbir can yoktur ki basında bir koruyucu olmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Oyleyse insan neden yaratıldıgına bir baksın"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Fıskıran su damlacıgından yaratıldı"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel ile kaburga kemikleri arasından cıkan"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Allah onu tekrar yaratmaya kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Gizli islerin ortaya cıkarıldıgı gunde"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Onun hicbir gucu ve hicbir yardımcısı olmaz"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Yagmurun sahibi goge"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Bitkinin yeserdigi yere andolsun ki"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Suphesiz Kur´an kesin bir sozdur"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "O sacma bir soz degildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Onlar bir tuzak kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir tuzak kuruyorum"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen kafirlere muhlet ver. Onlara biraz zaman tanı"
        }
    ]
}