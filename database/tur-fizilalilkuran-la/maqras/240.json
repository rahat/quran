{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "Bilmez mi o, kabirlerde olanlar dısarı atıldıgı"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Kalplerde olanlar ortaya konuldugu zaman"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Dogrusu Rabbleri o gun herseyinden haberdardır"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "Gurultu koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o gurultu koparacak olan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O gurultu koparacak olanın ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gun insanlar yayılmıs pervane gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Daglar atılmıs renkli yun gibi olurlar"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Kimin tartıları agır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O hos bir hayat icinde olur"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Kimin tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Onların yeri, (haviye) cukurdur"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "O kızgın bir atestir"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "Mal ve evlat cogaltma yarısı sizi oyaladı"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Nihayet kabirleri ziyaret ettiniz"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Hayır yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Yine hayır yakında bileceksiniz"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Hayır gercegi kesin bilgi ile bilseydiniz"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Andolsun ki cehennemi goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Andolsun ki onu gozunuzle kesin olarak goreceksiniz"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Sonra o gun size verilmis olan her nimetten sorguya cekileceksiniz"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "Asr´a andolsun ki"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "Insan mutlak husrandadır"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "Ancak iman edenler, iyi isler yapanlar, birbirlerine hakkı ve sabrı ogutleyenler bunun dısındadır"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "Insanları dilleri ile arkalarından cekistiren ve karsılarında kas, goz hareketleri ile onları asagılayan herkese yazıklar olsun"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "Malı toplayıp onu teker teker sayana"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "Malının kendisini olumsuzlestirecegini zannedene yazıklar olsun"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "Hayır. O kırıp gecen yere atılacaktır"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "O kırıp gecenin ne oldugunu bilir misin sen"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "Allah´ın tutusturulmus atesidir o"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "Tırmanıp yureklerin ustune cıkan"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "Cehennem onların uzerine kapatılacaktır"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "Uzun sutunlar icinde"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "Rabbinin fil sahiplerine yaptıgını gormedin mi"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "Onların tuzaklarını bosa cıkarmadı mı"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "Onların uzerine surulerle kuslar gonderdi"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "Onların uzerine piskin tugladan taslar atıyorlardı"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "Nihayet onları yenik ekin yapragı gibi yapıverdi"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "Kureys´in uzlasıp anlasması icin"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "Yaz ve kıs yolculuklarında uzlasıp anlasması icin"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "Bu evin Rabbine kulluk etsin onlar"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "O Rabb ki kendilerini aclıktan doyurmus ve korkudan guvenlige eristirmistir"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Dini yalanlayanı gordun mu"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Iste o, oksuzu iter, kakar"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "Yoksulu doyurmaya onayak olmaz"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Vay, o namaz kılanların haline ki"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "Onlar kıldıkları namazdan gafildirler"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "Onlar gosteris yaparlar"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "En ufak bir yardımı esirgerler"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Ey muhammed! Dogrusu biz sana pek cok nimet vermisizdir"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "Oyleyse Rabbin icin namaz kıl ve kurban kes"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Dogrusu adı sanı ortadan kalkacak olan sana kin tutan kimsedir"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "De ki: Ey kafirler"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "Ben sizin taptıklarınıza tapmam"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "Siz de benim taptıgıma tapmazsınız"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "Ben sizin taptıklarınıza tapacak degilim"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "Sizler de benim taptıgıma tapacak degilsiniz"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "Sizin dininiz size, benim dinim bana"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "Allah´ın yardımı ve fethi geldiginde"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "Insanların dalga dalga Allah´ın dinine girdigini gordugunde"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "Rabbini overek tesbih et, O´ndan magfiret dile. Cunku O tevbeleri kabul edendir"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "Ebu Leheb´in iki eli kurusun, kurudu da"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "Malı ve kazandıgı kendisine fayda vermedi"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "Alevli ateste yanacaktır"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "Karısı da odun hamalı olarak"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "Boynunda saglam hurma lifinden orulmus bir ip bulunacaktır"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "De ki: O Allah tektir"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah Samed´dir"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "O dogurmamıs ve dogmamıstır"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hicbir sey O´nun dengi olmamıstır"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "De ki; «Sıgınırım ben, karanlıgı yarıp sabahı ortaya cıkaran Rabbime"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Yarattıgı seylerin serrinden"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Karanlıgı coktugu zaman gecenin serrinden"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Dugumlere ufleyip tukuren buyucu kadınların serrinden"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "ve hased ettigi zaman hasedcinin serrinden.»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "De ki: Sıgınırım ben, insanların Rabbine"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "insanların Melikine"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "insanların Tanrısına"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "O sinsi vesvesecinin serrinden"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "O ki insanların goguslerine kotu dusunceleri fısıldar"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Gerek cinlerden, gerek insanlardan"
        }
    ]
}