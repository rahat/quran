{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gok yarıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar sacıldıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler patladıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin ici dısına cıktıgı zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Herkes neyi one, neyi geriye aldıgını ogrenir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Seni engin kerem sahibi Rabbine, karsı aldatan nedir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O, seni yaratan, belini dogrultan ve seni dengeli kılan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Diledigi bicimde sana sekil veren Rabbine"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır! Aksine siz dini yalanlıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Suphesiz basınızda bekciler vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Serefli katipler"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Yaptıklarınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Suphesiz iyiler cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Kotuler de cehennemdedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din gunu oraya surulurler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Oradan bir daha cıkamazlar"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gununun ne oldugunu bilir misin sen"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Hem din gununun ne oldugunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gun kimsenin kimseye faydası olmaz. O gun yetki sadece Allah´ındır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Olcu ve tartıda hile yapanların vay haline"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Onlar insanlardan bir sey olcup aldıkları zaman eksiksiz alırlar"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Kendileri onlara birsey olctukleri veya tarttıkları zaman (olcu ve tartıyı) eksik verirler"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar, tekrar dirileceklerini sanmıyorlar mı"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Buyuk bir gun"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Insanların alemlerin Rabbinin huzurunda durdukları gun"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "Hayır. Allah´ın buyrugundan dısarı cıkanların yazısı muhakkak siccindedir"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "Siccin´in ne oldugunu bilir misin sen"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "O, muhurlenmis bir kitabdır"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "Vay haline o gun yalanlayanların"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "Kıyamet gununu yalanlamıs olanların"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "Oysa onu azgın, gunahkardan baskası yalanlamaz"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "Ayetlerimiz kendisine okundugu zaman ´eskilerin masalları´ der"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "Hayır, aksine kazandıkları, kalplerini karatmıstı"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "Hayır, suphesiz onlar o gun, Rabblerinden mahrum kalacaklardır"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "Sonra onlar, suphesiz cehenneme surukleneceklerdir"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "Sonra da onlara: «Iste bu, yalanlayıp durdugunuz seydir» denilecek"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "Fakat iyilerin yazısı Illiyyin´dedir"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "Illiyyinin ne oldugunu bilir misin sen"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "Muhurlenmis bir kitaptır o"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "Yakınlastırılmıs olanlar onu gorurler"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "Iyiler suphesiz cennette nimetler icindedirler"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "Tahtlar uzerinde kurulup etrafı seyrederler"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "Yuzlerinde cennetin aydınlıgını gorursun"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "Onlara muhurlu saf bir icecekten icirilir"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "Sonu misktir, onun. Iste yarısanlar bunda yarıssınlar"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "Karısımı tesnimdendir"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "Yakınlastırılmıs olanların kendisinden ictigi kaynaktan"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "Suclular, suphesiz inanmıs olanlara gulerlerdi"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "Yanlarından gectikleri zaman da birbirlerine goz kırparlardı"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "Ailelerinin yanına dondukleri zaman da eglenmeye baslarlardı"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "Inananları gorduklerinde «Bunlar sapıklardır» derlerdi"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "Oysa kendileri, onların uzerine bekci olarak gonderilmemislerdi"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "Iste bugun de inananlar kafirlere gulerler"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "Tahtlar uzerinde kurulup bakarlar"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "Kafirler, yaptıklarının cezasını gorduler mi? diye"
        }
    ]
}