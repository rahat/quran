{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbinin yuce adını takdis et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O yaratan ve duzeltendir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Olculeri belirleyip yolunu gosterendir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Yemyesil meraları bitirendir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları kupkuru cope cevirendir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ey Muhammed! Sana Kur´an´ı biz okutacagız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın diledigi baska. O acıgı da bilir gizliyi de"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Seni en kolay yolu tutmaga muvaffak edecegiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde hatırlatmak fayda verirse hatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah´tan korkan, ogut alır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kacacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O en buyuk atese yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Sonra onun icinde ne olur ne de yasar"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Dogrusu mutluluga ermistir arınan"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbinin adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz su dunya hayatını ustun tutuyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha kalıcıdır"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Bu hukum elbette ilk sahifelerde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Ibrahim´in ve Musa´nın sahifelerinde"
        }
    ]
}