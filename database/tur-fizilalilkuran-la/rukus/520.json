{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Andolsun sokup cıkaranlara"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Hemen cekip alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarısıp, gecenlere"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Derken isi duzenliyenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ardından bir baska sarsıntı gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun kalpler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gozler korkudan asagı kayar"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Diyorlar ki: «Biz yine eski halimize dondurulecek miyiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Biz curumus kemikler olduktan sonra ha"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Oyle ise bu, ziyanlı bir donustur» dediler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Dogrusu bir tek cıglık yetecektir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hepsi hemen bir duzluge dokulecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Tuva´da, kutsal bir vadide, Rabbi ona soyle hitab etmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavuna git cunku o azdı"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: «Arınmaga niyetin var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbine giden yolu gostereyim ki O´na saygı duyup korkasın.»"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Bunun uzerine ona en buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Fakat o Musa´yı yalanladı, karsı geldi"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra sırtını dondu; calısmaga koyuldu"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Adamlarını toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yuce Rabbiniz benim dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah bunun uzerine onu dunya ve ahiret azabına ugrattı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Dogrusu bunda Allah´tan korkan kimseye ders vardır"
        }
    ]
}