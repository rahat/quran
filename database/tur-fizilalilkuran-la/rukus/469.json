{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kıyamet koptugu zaman"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Onu hic kimse yalanlayamayacaktır"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "O kimini alcaltır, kimini de yukseltir"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Yeryuzu siddetle sarsıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Daglar paramparca olup"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Toz halinde bosluga dagıldıgı zaman"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Sizler uc gruba ayrıldıgınız zaman"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Defterleri sagdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Defterleri soldan verilenler. Vay gele baslarına"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Ve onculer, hep onden gidenler"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Onlar Allah´a yakındırlar"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Bol nimetli cennetlerdedirler"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Cogu oncu ummetlerden"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Birazı da sonrakilerdendir"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "Altın islemeli tahtlarda otururlar"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Karsılıklı olarak bu tahtlara kurulurlar"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Hic olmeyecek genc hizmetciler aralarında dolasır"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Gurul gurul akan bir cesmeden doldurulmus testiler, ibrikler ve kadehlerle"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Bu icki ne baslarını agrıtır, ne de sarhos eder"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Hoslarına giden meyvalarla"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Istahla yiyecekleri kus etleri ile"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Onlara iri gozlu huriler sunulur"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Tıpkı sedefteki inciler gibi"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Yaptıkları iyiliklerin karsılıgı olarak"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Orada ne bos ve ne gunah icerikli bir soz isitirler"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Isittikleri tek soz «selam, selam» dır"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Defterleri sagdan verilenler. Ne mutlu onlara"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Onlar dikensiz sedir agacları"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Meyva yuklu muz agacları arasında"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Kesintisiz golgeler altında"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Caglayan akarsu boylarında"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Bol meyvalar yanında"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Surekli ve yasaksız"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Yuksek dosekler uzerindedirler"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Biz oradaki hurileri yeniden yarattık"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Onları bakire yaptık"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Eslerine asık ve onlarla aynı yasta"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Defterleri sagdan verilenler icin"
        }
    ]
}