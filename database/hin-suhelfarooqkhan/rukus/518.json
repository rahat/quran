{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "ये लोग आपस में किस चीज़ का हाल पूछते हैं"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "एक बड़ी ख़बर का हाल"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "जिसमें लोग एख्तेलाफ कर रहे हैं"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "देखो उन्हें अनक़रीब ही मालूम हो जाएगा"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "फिर इन्हें अनक़रीब ही ज़रूर मालूम हो जाएगा"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "क्या हमने ज़मीन को बिछौना"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "और पहाड़ों को (ज़मीन) की मेख़े नहीं बनाया"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "और हमने तुम लोगों को जोड़ा जोड़ा पैदा किया"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "और तुम्हारी नींद को आराम (का बाइस) क़रार दिया"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "और रात को परदा बनाया"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "और हम ही ने दिन को (कसब) मआश (का वक्त) बनाया"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "और तुम्हारे ऊपर सात मज़बूत (आसमान) बनाए"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "और हम ही ने (सूरज) को रौशन चिराग़ बनाया"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "और हम ही ने बादलों से मूसलाधार पानी बरसाया"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "ताकि उसके ज़रिए से दाने और सबज़ी"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "और घने घने बाग़ पैदा करें"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "बेशक फैसले का दिन मुक़र्रर है"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "जिस दिन सूर फूँका जाएगा और तुम लोग गिरोह गिरोह हाज़िर होगे"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "और आसमान खोल दिए जाएँगे"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "तो (उसमें) दरवाज़े हो जाएँगे और पहाड़ (अपनी जगह से) चलाए जाएँगे तो रेत होकर रह जाएँगे"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "बेशक जहन्नुम घात में है"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "सरकशों का (वही) ठिकाना है"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "उसमें मुद्दतों पड़े झींकते रहेंगें"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "न वहाँ ठन्डक का मज़ा चखेंगे और न खौलते हुए पानी"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "और बहती हुई पीप के सिवा कुछ पीने को मिलेगा"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(ये उनकी कारस्तानियों का) पूरा पूरा बदला है"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "बेशक ये लोग आख़ेरत के हिसाब की उम्मीद ही न रखते थे"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "और इन लोगो हमारी आयतों को बुरी तरह झुठलाया"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "और हमने हर चीज़ को लिख कर मनज़बत कर रखा है"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "तो अब तुम मज़ा चखो हमतो तुम पर अज़ाब ही बढ़ाते जाएँगे"
        }
    ]
}