{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Кад се небо расцепи"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "и послуша свога Господара, а оно ће да буде то дужно"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "и када Земља буде растегнута"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "и избаци оно што је у њој, и потпуно се испразни"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "и послуша свога Господара, а она је обавезна да то учини"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "О човече, ти се трудиш идући своме Господару, па ћеш свој труд да нађеш"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Онај коме буде његова књига у његову десну руку дата"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Лак ће обрачун полагати"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "и својима ће радостан да се врати"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "а онај коме буде његова књига иза његових леђа дата"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "пропаст ће да призива"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "и у Огњу ће да гори"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Заиста је он са својом породицом био радостан"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "и мислио је да никада неће да се врати"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "а хоће! Његов Господар о њему, заиста, све зна"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Али не! Кунем се вечерњим руменилом"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "и ноћи, и оним што она сакупља"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "и Месецом пуним"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "ви ћете сигурно из стања у стање да прелазите"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Па шта им је па не верују"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "и кад им се Кур'ан учи на тло лицем не падају"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Напротив, они који не верују поричу"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "а Аллах најбоље зна шта они у себи крију"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "зато им наговести болну патњу"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "А они који буду веровали и радили добра дела, имаће непрекидну награду"
        }
    ]
}