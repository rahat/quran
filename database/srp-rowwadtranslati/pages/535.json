{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "служиће их вечно млади дечаци"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "са чашама и ибрицима, и пехаром пуним пића из текућег извора"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "од кога глава неће да их боли и због кога неће памет да изгубе"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "и воћем које ће сами да бирају"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "и месом птичијим какво буду желели"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "У њима ће да буду и рајске лепотице крупних очију"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "сличне скривеном бисеру у шкољкама"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "као награда за оно што су чинили"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "У њима неће да слушају празне беседе, ни грешни говор"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "него само речи: \"Мир Божји, мир Божји"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "А они са десне стране - шта ће да буде са оним са десне стране"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Биће међу лотосовим дрвећем без бодљи"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "и међу дрвећем акације нанизаним плодовима"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "и у пространој хладовини"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "поред текуће воде"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "и међу разноврсним воћем"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "које ће увек да имају и које неће да буде забрањено"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "и на уздигнутим постељама"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Њихово стварање, заиста, ћемо да обновимо"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "и девицама да их учинимо"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "и оним које се умиљавају својим мужевима и истих година"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "за оне са десне стране"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Биће их много из првих"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "а много из каснијих"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "А они са леве стране - шта је са онима са леве стране"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Они ће да буду у ватри ужареној и кључалој води"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "и у сенци црног дима"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "у којој неће да буде свежине ни било какве угодности"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Они су пре тога живели раскошним животом"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "и упорно су чинили тешке грехе"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "и говорили су: „Зар кад умремо и земља и кости постанемо - зар ћемо збиља да будемо оживљени"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "зар и наши древни преци?!“"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "Реци: „И древни и каснији"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "у одређено време, и у Дан одређени биће сакупљени"
        }
    ]
}