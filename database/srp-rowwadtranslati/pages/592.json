{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Али, ви више волите пролазан живот"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "а Будући свет је бољи и вечан је"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "То, заиста, има у првим листовима"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "листовима Аврамовим и Мојсијевим"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Да ли је дошла до тебе вест о Општој невољи"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Нека лица ће тог Дана бити потиштена"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "преморена, напаћена"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "пржена у ужареној ватри"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "напајана са узаврелог врела"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "када другог јела осим трња неће да има"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "које неће ни да угоји ни глад да утоли"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Нека лица тог Дана биће радосна"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "својим трудом задовољна"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "у високоме Рају"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "у коме неће да слушају празне беседе"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "У њему су извор-воде које теку"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "у њему су уздигнути дивани"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "и постављени пехари"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "и поређани јастуци"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "и раширени ћилими"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Па, зашто они не гледају камилу како је створена"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "и небо како је уздигнуто"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "и планине како су постављене"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "и Земљу како је прострта"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ти опомињи, јер ти и јеси само опомињач"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ти ниси онај који их присиљава"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "А онога који се окрене и не верује"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "њега ће Аллах да казни највећом патњом"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Нама ће они, заиста, да се врате"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "А потом, на Нама је, заиста, да њихов рачун сведемо"
        }
    ]
}