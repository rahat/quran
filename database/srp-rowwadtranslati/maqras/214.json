{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Када се Неизбежни догађај догоди"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "догађање његово нико неће порицати"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Неке ће да понизи, а неке да узвиси"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Кад се Земља јако потресе"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "и брда се у комадиће здробе"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "и постану разасута прашина"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "вас ће да буде три врсте"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "они са десне стране - шта ће да буде са оним са десне стране"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "и они са леве стране - шта ће да буде са онима са леве стране"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "И они који су предњачили – они ће предњачити"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "То су они блиски"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "у рајским баштама биће наслада"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Биће их много из првих"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "а мало из задњих"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "на диванима извезеним"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "једни према другима на њима ће да буду наслоњени"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "служиће их вечно млади дечаци"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "са чашама и ибрицима, и пехаром пуним пића из текућег извора"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "од кога глава неће да их боли и због кога неће памет да изгубе"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "и воћем које ће сами да бирају"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "и месом птичијим какво буду желели"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "У њима ће да буду и рајске лепотице крупних очију"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "сличне скривеном бисеру у шкољкама"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "као награда за оно што су чинили"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "У њима неће да слушају празне беседе, ни грешни говор"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "него само речи: \"Мир Божји, мир Божји"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "А они са десне стране - шта ће да буде са оним са десне стране"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Биће међу лотосовим дрвећем без бодљи"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "и међу дрвећем акације нанизаним плодовима"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "и у пространој хладовини"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "поред текуће воде"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "и међу разноврсним воћем"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "које ће увек да имају и које неће да буде забрањено"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "и на уздигнутим постељама"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Њихово стварање, заиста, ћемо да обновимо"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "и девицама да их учинимо"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "и оним које се умиљавају својим мужевима и истих година"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "за оне са десне стране"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "Биће их много из првих"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "а много из каснијих"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "А они са леве стране - шта је са онима са леве стране"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "Они ће да буду у ватри ужареној и кључалој води"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "и у сенци црног дима"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "у којој неће да буде свежине ни било какве угодности"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "Они су пре тога живели раскошним животом"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "и упорно су чинили тешке грехе"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "и говорили су: „Зар кад умремо и земља и кости постанемо - зар ћемо збиља да будемо оживљени"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "зар и наши древни преци?!“"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "Реци: „И древни и каснији"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "у одређено време, и у Дан одређени биће сакупљени"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "и тада ћете ви, о заблудели, који поричете оживљење"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "сигурно са дрвета Зеккум да једете"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "и њиме ћете да пуните стомаке"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "па затим на то кључалу воду да пијете"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "попут камила које не могу да угасе жеђ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "то ће да им буде угошћење на Дан полагања рачуна"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "Ми смо вас створили - па зашто не поверујете"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "Шта мислите да ли семену које убацујете"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "ви облик дајете или Ми то чинимо"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "Ми одређујемо кад ће ко од вас да умре, и нико не може да Нас спречи"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "да ликове ваше изменимо и да вас изнова у ликовима које ви не познајете створимо"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "Познато вам је како сте први пут створени, па зашто се не уразумите"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "Шта мислите о оном што посејете"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "Да ли му ви дајете снагу да ниче, или то Ми чинимо"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "Када би хтели могли би да га претворимо у суво растиње, па бисте се снебивали"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "„Ми смо, заиста, оштећени"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "чак смо свега лишени!“"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "Шта мислите о води коју пијете –"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "да ли је ви или Ми из облака спуштамо"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "Ако желимо, можемо да је сланом учинимо - па зашто нисте захвални"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "Шта мислите о ватри коју палите"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "да ли дрво за њу Ми стварамо или ви"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "Ми смо је учинили као упозорење, и као корист путницима"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "зато слави и величај име Господара свога Величанственог"
        }
    ]
}