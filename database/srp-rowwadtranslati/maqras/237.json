{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Слави и узвисуј име свога Господара, Свевишњег"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Који све ствара и чини складним"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "и Који одређује, па упућује"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "и Који чини да изникне растиње"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "а потом чини да постане суво, потамнело"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Ми ћемо да те научимо да учиш па ништа нећеш да заборавиш"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "осим онога што Аллах хоће. Он, заиста, зна и оно што на јаву износите и оно што кријете"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "И доступним да ти учинимо оно што је лако"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "па ти опомињи док опомена буде користила"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "опоменуће се онај који се боји Аллаха"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "а избегаваће је онај најгори"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "који ће у великој ватри да гори"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "па у њој неће ни да умире ни да живи"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Успео је онај који се очисти"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "и спомене име свога Господара па молитву обави"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Али, ви више волите пролазан живот"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "а Будући свет је бољи и вечан је"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "То, заиста, има у првим листовима"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "листовима Аврамовим и Мојсијевим"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Да ли је дошла до тебе вест о Општој невољи"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Нека лица ће тог Дана бити потиштена"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "преморена, напаћена"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "пржена у ужареној ватри"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "напајана са узаврелог врела"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "када другог јела осим трња неће да има"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "које неће ни да угоји ни глад да утоли"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Нека лица тог Дана биће радосна"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "својим трудом задовољна"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "у високоме Рају"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "у коме неће да слушају празне беседе"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "У њему су извор-воде које теку"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "у њему су уздигнути дивани"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "и постављени пехари"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "и поређани јастуци"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "и раширени ћилими"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Па, зашто они не гледају камилу како је створена"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "и небо како је уздигнуто"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "и планине како су постављене"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "и Земљу како је прострта"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ти опомињи, јер ти и јеси само опомињач"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ти ниси онај који их присиљава"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "А онога који се окрене и не верује"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "њега ће Аллах да казни највећом патњом"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Нама ће они, заиста, да се врате"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "А потом, на Нама је, заиста, да њихов рачун сведемо"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Тако ми зоре"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "и десет ноћи"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "и парног и непарног"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "и ноћи када настаје"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "зар то паметном заклетва није"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Зар не знаш шта је твој Господар урадио са народом Ад"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Са становницима Ирема, пуног палата на ступовима"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "којима није било равних ни у једној земљи"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "и са Семудом, који су клесали стене у долини"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "а и са фараоном, који је имао војску"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "који су на Земљи били охоли"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "и смутње на њој умножили"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "па је твој Господар бич патње на њих спустио"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "а твој Господар, заиста, све надгледа"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "А човек, када га његов Господар искуша па му почаст укаже и благодатима га обаспе, каже: „Мој Господар је мене почаствовао!“"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "А кад га искуша и његову опскрбу учини оскудном, онда каже: „Мој Господар ме је понизио!“"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "А није тако! Ви пажњу сирочету не указујете"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "и да се нахрани пуки сиромах – један другога не подстичете"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "а наследство похлепно једете"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "и богатство претерано волите"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Уистину, када Земља буде здробљена у комадиће"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "и када дође твој Господар, а анђели буду све ред до реда"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "и када тај дан Пакао буде примакнут, тада ће човек да се сети - а на шта му је сећање"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "И рећи ће: „Камо среће да сам се за овај живот припремио!“"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "А тај Дан нико неће као Он да кажњава"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "и нико неће као Он у окове да окива"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "А ти, о душо смирена"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "врати се Господару своме задовољна, а и Он тобом задовољан"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "па уђи и буди међу Мојим слугама"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "и уђи у Мој Рај"
        }
    ]
}