{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Кунем се градом овим"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "а ти си у овом граду ослобођен ограничења"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "и родитељем и оним кога је родио"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Човека смо створили да се труди"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Мисли ли он да му нико ништа не може"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "„Утрошио сам нагомилано богатство!“ Говори"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Зар мисли да га нико није видео"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Зар му нисмо дали два ока"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "и језик и две усне"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "и добро и зло му објаснили"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Па зашто он није на благодатима захвалан био"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "А шта ти мислиш: како се на благодатима захвалан може бити"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Роба ропства ослободити"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "или, у време глади нахранити"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "сироче блиског рода"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "или јадног сиромаха"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "А потом да је био од оних који верују, који једни другима препоручују стрпљивост и који једни другима препоручују милосрђе"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "они ће да буду срећници"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "А они који не верују у Наше речи и доказе, они ће да буду несретни"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "изнад њих ће да буде затворена ватра"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Тако ми Сунца и његовог светла"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "и Месеца када га прати"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "и дана када га видљивим учини"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "и ноћи када га заклони"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "и неба и Онога Који га сазда"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "и Земље и Онога Који је распростре"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "и душе и Онога Који је исправном створи"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "па је надахнуо да разликује грехе од богобојазности"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "успео је онај ко је очисти"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "а изгубио је онај ко је запостави"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Народ Семуд је због своје охолости порицао"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Кад се један несрећник између њих подигао"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Аллахов посланик им је довикнуо: „Пазите на Аллахову камилу и њен ред појења!“"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Али су га у лаж утерали, па су је заклали - и њихов Господар их је, због њихових греха уништио и казном све обухватио"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "не бојећи се какве ће да буду последице тога"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Тако ми ноћи када све прекрије"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "и дана кад сване"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "мушко и женско које створи"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "ваш труд је, заиста, различит"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "А ономе који удељује и богобојазан је"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "и оно најлепше сматра истинитим"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Олакшаћемо му чињење добрих дела"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "а ономе који тврдичи и осећа се независним"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "и оно најлепше сматра лажним"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Олакшаћемо му чињење греха"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "и његово богатство, кад се стровали, неће да му користи"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Ми смо дужни да укажемо на Прави пут"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "и једино Нама припада и Будући и овај свет"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Зато вас упозоравам на разбукталу ватру"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "у коју ће да уђе само највећи несрећник"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "онај који буде порицао и окретао се"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "а од ње ће да буде одстрањен онај најбогобојазнији"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "онај који буде део свога богатства удељивао, да би се очистио"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "не очекујући да му се узврати захвалношћу"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Већ једино жудећи за Лицем Господара свога Свевишњег"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "и он ће, збиља, да буде задовољан"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Тако ми јутра"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "и ноћи кад се утиша"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "твој Господар није те (Мухаммеде) ни напустио ни омрзнуо"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "Будући свет је, заиста, бољи за тебе од овог света"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "а твој Господар ће ти сигурно подарити, па ћеш задовољан бити"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Зар ниси био сироче, па ти Он уточиште пружи"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "и залутао си био, па те је упутио"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "и сиромах си био, па те богатим учинио"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Зато, сироче не уцвили"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "и онога ко тражи не одбиј"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "и о благодати свога Господара казуј"
        }
    ]
}