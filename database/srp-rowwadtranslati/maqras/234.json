{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Намрштио се и окренуо"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "зато што му је слепи човек пришао"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "А шта ти знаш, можда он жели да се греха очисти"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "или опомене, па да му опомена користи"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "А што се тиче онога који је богат"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "ти се њему окрећеш"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "а ти ниси одговоран ако се он не очисти"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "А што се тиче онога који ти је дошао журећи"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "и боји се"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ти њега занемарујеш"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Не чини тако! Заиста је ово опомена"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "па ко хоће, имаће Га на уму"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "на листовима је цењеним"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "узвишеним, чистим"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "у рукама изасланика"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "часних, честитих"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Проклет нека је човек! Колико је само његово порицање"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Од чега га Он ствара"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Од капи семена га ствара, па му одређује"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "И Прави пут му доступним учинио"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "затим му живот одузме и учини да буде сахрањен"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "и после ће, када Он буде хтео, да га оживи"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Не, још није извршио оно што је Он наредио"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Нека човек погледа у своју храну"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Ми обилну кишу проливамо"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "затим земљу пукотинама цепамо"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "и чинимо да из ње израста жито"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "и грожђе и поврће"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "и маслине и палме"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "и густе баште"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "и воће и траве"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "на коришћење вама и вашој стоци"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "А кад дође снажан глас"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "на Дан када ће човек од свога брата да побегне"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "и од своје мајке, и од свога оца"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "и од своје супруге и својих синова"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "тог Дана сваки човек ће само о себи бринути"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "нека лица тог Дана биће блистава"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "насмејана, радосна"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "а нека лица тог Дана биће прашином прекривена"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "тама ће их прекривати"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "то ће, збиља, да буду неверници, развратници"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Када Сунце буде скупљено и изгуби сјај"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "и када раштркане звезде попадају"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "и када планине буду покренуте и смрвљене"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "и када стеоне камиле буду остављене"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "и када дивље животиње буду сабране"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "и када мора буду распаљена"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "и када душе буду спарене"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "и када девојчица која је жива закопана буде упитана"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "због којег је греха убијена"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "и када листови буду раширени"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "и када небо буде уклоњено"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "и када Огањ буде разбуктан"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "и када Рај буде приближен"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "свако ће да сазна оно што је припремио"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "И кунем се оним што се скрива"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "што се креће и склања"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "и ноћи кад долази"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "и зором кад „дише“"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Он - Кур'ан је, заиста, казивање Племенитог Анђела"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Моћног, код Господара Престола, цењеног"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Коме се други покоравају, поверљивог"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "А ваш друг Мухаммед није луд"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "он га је на обзорју јасном видео"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "и, када је у питању оно што је недокучиво чулима, он није шкрт"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "и Кур'ан није говор проклетог ђавола"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "па куда онда идете"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Он је само опомена световима"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "ономе од вас који жели да је на правом путу"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "а ви не можете ништа хтети ако то Аллах, Господар светова, неће"
        }
    ]
}