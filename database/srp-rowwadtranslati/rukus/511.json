{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "И тако Ми Месеца"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "и ноћи када нестане"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "и зоре када сване"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "то је, заиста, једна од највећих невоља"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "људима је опомена"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "ономе између вас који хоће напред да иде или заостане"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Свака душа ће за своја дела да одговара"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "осим оних на десној страни"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "они ће да се у рајским баштама распитују"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "о неверницима"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "„Шта вас је довело у Секар?“"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "„Нисмо“, рећи ће, „били од оних који су се Аллаху клањали"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "нити смо хранили сиромахе"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "И у беспослице смо се упуштали са беспослењацима"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "и Судњи дан смо порицали"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "све док нам смрт није дошла.“"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Њима неће да користи посредовање посредника"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Па зашто се они окрећу од опомене"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Као да су дивљи магарци преплашени"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "који беже од лавова"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Напротив, сваки би човек међу њима хтео да му се дају раширени листови"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Никада, јер они се оног света не плаше"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Уистину! Кур'ан је опомена"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "и ко хоће, на уму ће да га има"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "а на уму ће да га има само ако Аллах буде хтео, Он је једини достојан да Га се боје и достојан је да опрашта"
        }
    ]
}