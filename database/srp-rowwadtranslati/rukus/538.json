{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Читај са именом твога Господара Који ствара"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "ствара човека од заквачка"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Читај, племенит је твој Господар"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Који подучава перу"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Који човека подучава ономе што не зна"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Уистину, човек се узохоли"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "чим се независним осети"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "а твоме Господару ће сви, заиста, да се врате"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Виде ли ти онога који спречава"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "слугу Нашег да клања"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Шта мислиш, ако је он на Правом путу"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "или ако богобојазност наређује"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Шта мислиш, ако он пориче и окреће се"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "зар он не зна да Аллах види"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Напротив! Ако се не окани, оцрнићемо му чело"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "чело лажно и грешно"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "па нека он позове своје друштво"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Ми ћемо да позовемо анђеле"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Напротив! Ти се њему не покоравај, већ падај ничице и приближи се своме Господару"
        }
    ]
}