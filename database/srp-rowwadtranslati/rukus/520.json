{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Тако Ми анђела који душе чупају грубо"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "и анђела који душе узимају нежно"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "и анђела који се крећући плове"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "и оних који једни друге претичу"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "и оних који извршавају Божје наредбе и одредбе"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "на Дан када ће се Земља потрести"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "за којим ће да дође следећи"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "Људска срца ће тог дана бити престрављена"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "а погледи њихови понизни"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Они говоре: „Зар ћемо, заиста, у гробовима да будемо враћени у живот"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Зар кад постанемо труле кости"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "И још кажу: „То је, онда, штетан повратак.“"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "А биће то само једна наредба"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "а они већ на површини Земље"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Да ли је допрла до тебе вест о Мојсију"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "кад га је његов Господар позвао у благословљеној, чистој долини Тува"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Иди код фараона, он се, заиста, осилио"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "и реци: „Да ли би ти да се очистиш"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "да те упутим твоме Господару, па да Га се бојиш"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "И онда му је показао највеће чудо"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "али је он порекао и није послушао"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "већ се окренуо и пожурио"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "и сабрао и повикао"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "И рече: „Ја сам господар ваш највећи!“"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "и Аллах га је, на другом, а и на овом свету казнио"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "У томе има поука за свакога који се буде Аллаха бојао"
        }
    ]
}