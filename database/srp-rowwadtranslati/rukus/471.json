{
    "rukus": [
        {
            "chapter": 56,
            "verse": 75,
            "text": "И кунем се положајима звезда"
        },
        {
            "chapter": 56,
            "verse": 76,
            "text": "а то је, да знате, велика заклетва"
        },
        {
            "chapter": 56,
            "verse": 77,
            "text": "Он је, заиста, Кур'ан племенити"
        },
        {
            "chapter": 56,
            "verse": 78,
            "text": "у Књизи брижљиво чуваној"
        },
        {
            "chapter": 56,
            "verse": 79,
            "text": "Додирнути је смеју само они који су чисти"
        },
        {
            "chapter": 56,
            "verse": 80,
            "text": "Он је објава од Господара светова"
        },
        {
            "chapter": 56,
            "verse": 81,
            "text": "па како овај говор омаловажавате"
        },
        {
            "chapter": 56,
            "verse": 82,
            "text": "и уместо захвалности што вам је дарована опскрба, ви у њега не верујете"
        },
        {
            "chapter": 56,
            "verse": 83,
            "text": "А зашто ви, кад душа допре до грла"
        },
        {
            "chapter": 56,
            "verse": 84,
            "text": "и кад ви будете тада гледали –"
        },
        {
            "chapter": 56,
            "verse": 85,
            "text": "а Ми смо му ближи од вас, али ви не видите –"
        },
        {
            "chapter": 56,
            "verse": 86,
            "text": "зашто је онда, ако рачун нећете да полажете"
        },
        {
            "chapter": 56,
            "verse": 87,
            "text": "не повратите, ако истину говорите"
        },
        {
            "chapter": 56,
            "verse": 88,
            "text": "И ако буде један од оних који су Аллаху блиски –"
        },
        {
            "chapter": 56,
            "verse": 89,
            "text": "удобност и лепа опскрба и рајске благодати припашће њему"
        },
        {
            "chapter": 56,
            "verse": 90,
            "text": "А ако буде један од оних који су са десне стране"
        },
        {
            "chapter": 56,
            "verse": 91,
            "text": "па, мир Божји теби од оних са десне стране"
        },
        {
            "chapter": 56,
            "verse": 92,
            "text": "А ако буде један од оних који су порицали и у заблуди остали"
        },
        {
            "chapter": 56,
            "verse": 93,
            "text": "па, кључалом водом биће угошћен"
        },
        {
            "chapter": 56,
            "verse": 94,
            "text": "и у Огњу пржен"
        },
        {
            "chapter": 56,
            "verse": 95,
            "text": "Сама је истина, заиста, све ово"
        },
        {
            "chapter": 56,
            "verse": 96,
            "text": "Па, слави и величај име свога Господара Величанственог"
        }
    ]
}