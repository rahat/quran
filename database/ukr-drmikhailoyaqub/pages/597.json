{
    "pages": [
        {
            "chapter": 95,
            "verse": 1,
            "text": "Клянуся смоківницею і оливою"
        },
        {
            "chapter": 95,
            "verse": 2,
            "text": "клянуся горою Сінай"
        },
        {
            "chapter": 95,
            "verse": 3,
            "text": "клянуся цим містом надійним"
        },
        {
            "chapter": 95,
            "verse": 4,
            "text": "Ми створили людину в найкращій подобі"
        },
        {
            "chapter": 95,
            "verse": 5,
            "text": "Потім Ми скинемо її в найнижче з найнижчого"
        },
        {
            "chapter": 95,
            "verse": 6,
            "text": "окрім тих, які увірували й творили добрі справи; чекає на них невичерпна винагорода"
        },
        {
            "chapter": 95,
            "verse": 7,
            "text": "Хто ж після цього змушує тебе відкидати Суд"
        },
        {
            "chapter": 95,
            "verse": 8,
            "text": "Хіба Аллаг — не Наймудріший Суддя"
        },
        {
            "chapter": 96,
            "verse": 1,
            "text": "Читай! Ім’ям Господа твого, Який створив"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "створив людину зі згустку крові"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Читай! І Господь твій — Найщедріший"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Який навчив письма пером"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "Навчив людину того, чого вона не знала"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Але ж ні! Порушує людина межі"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "коли здається їй, що вона не потребує нічого"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Воістину, до Господа твого повернення"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Чи бачив ти того, який заважає"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "рабу Нашому молитися"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Як ти вважаєш — а раптом він був на праведному шляху"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "та закликав до богобоязливості"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Як ти вважаєш — а якщо він сприйняв правду за оману та й відвернувся"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "то чи не знав він, що Аллаг бачить його"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Але ж ні! Якщо він не зупиниться, Ми схопимо його за чуб"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "чуб брехливий, грішний"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Нехай кличе своїх захисників"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Ми ж покличемо вартових пекла"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Але ж ні, не корися йому, а вклонися низько Господу й наближайся до Нього"
        }
    ]
}