{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Коли настане невідворотна Подія"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "то ніхто не заперечуватиме приходу її"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Вона принижує та підносить"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Коли здригнеться земля"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "коли гори розколються на шматки"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "і стануть розсипаним пилом"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "то ви станете трьома групами"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Одні люди праворуч — хто ті, що праворуч"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Одні люди ліворуч — хто ті, що ліворуч"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "А ті, що попереду — будуть попереду"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Вони і є наближеними"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "які перебувають в садах насолоди"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Багато хто з них — перші покоління"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "а меншість — наступні"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "На ложах оздоблених"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "вони лежатимуть одне навпроти одного"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "а обходитимуть їх вічно молоді юнаки"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "із чашами, глеками та кубками з джерельним напоєм"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "від якого не болить голова та від якого не хмеліють"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Там плоди, які вони вибирають"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "пташине м’ясо, якого вони побажають"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "та чорноокі"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "схожі на приховану перлину"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Ось винагорода за те, що чинили вони"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "І не почують вони там ні марнослів’я, ні гріховних розмов"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "а лише слова: «Мир! Мир!»"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Люди праворуч — хто ті, що праворуч"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Вони будуть серед лотосів, позбавлених шипів"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "під бананами, на яких рядами висять плоди"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "у широких затінках"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "серед розлитих вод"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "і багатьох плодів"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "яких завжди вдосталь, і вони під рукою"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Їм — піднесені килими"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "воістину, Ми створили їх ще раз"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "і зробили їх цнотливими"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "люблячими однолітками"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Це для тих, хто праворуч"
        }
    ]
}