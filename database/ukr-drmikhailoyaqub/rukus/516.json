{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Клянуся добрими вісниками"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "які сильно віють"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "які стрімко поширюються"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "які впевнено розрізнюють"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "які приносять нагадування –"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "задля виправдання або застереження![CDLXIII]"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Обіцяне вам неодмінно збудеться"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Коли зорі згаснуть"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "коли небо трісне"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "коли гори розвіються"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "коли посланцям буде встановлено строк –"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "на який же день це призначено"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "На День Розрізнення"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "А звідки тобі знати, що таке День Розрізнення"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Невже Ми не знищили давні народи"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Потім за ними підуть ще й інші"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Ось так Ми вчиняємо з грішниками"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Невже Ми не створили вас із мізерної рідини"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "вмістивши її у надійне місце"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "до визначеного строку"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Ми визначили міру; як же прекрасно Ми визначаємо міру"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Хіба Ми не зробили землю вмістилищем"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "живих і мертвих"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "хіба не встановили там непорушні й високі гори, хіба не дарували вам для пиття прісну воду"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Йдіть же до того, що ви вважали за брехню"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Йдіть же в тінь із трьома гілками"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "яка не дарує затінку та не закриває від полум’я"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "сипле іскри, наче фортеця"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "схожа на жовтих верблюдів.[CDLXIV]"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "У той День вони не будуть розмовляти"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "і не дозволять їм шукати виправдань"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Ось він — День Розрізнення! Ми зібрали й вас, і тих, хто жив ще раніше"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Якщо маєте якусь хитрість, то спробуйте хитрувати проти Мене"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Лихом буде цей День для тих, хто заперечує правду"
        }
    ]
}