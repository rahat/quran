        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "فَبَشِّرۡهُمۡ بِعَذَابٍ اَلِيۡمٍ ٢٤ﶫ"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "اِلَّا الَّذِيۡنَ اٰمَنُوۡا وَعَمِلُوا الصّٰلِحٰتِ لَهُمۡ اَجۡرٌ غَيۡرُ مَمۡنُوۡنٍ ٢٥ﶒ"
        }
    ]
