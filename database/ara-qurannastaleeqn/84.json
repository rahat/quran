            "verse": 1,
            "text": "اِذَا السَّمَآءُ انۡشَقَّتۡ ١ﶫ"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "وَاَذِنَتۡ لِرَبِّهَا وَحُقَّتۡ ٢ﶫ"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "وَاِذَا الۡاَرۡضُ مُدَّتۡ ٣ﶠ"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "وَاَلۡقَتۡ مَا فِيۡهَا وَتَخَلَّتۡ ٤ﶫ"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "وَاَذِنَتۡ لِرَبِّهَا وَحُقَّتۡ ٥ﶠ"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "يٰ٘اَيُّهَا الۡاِنۡسَانُ اِنَّكَ كَادِحٌ اِلٰي رَبِّكَ كَدۡحًا فَمُلٰقِيۡهِ ٦ﶔ"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "فَاَمَّا مَنۡ اُوۡتِيَ كِتٰبَهٗ بِيَمِيۡنِهٖ ٧ﶫ"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "فَسَوۡفَ يُحَاسَبُ حِسَابًا يَّسِيۡرًا ٨ﶫ"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "وَّيَنۡقَلِبُ اِلٰ٘ي اَهۡلِهٖ مَسۡرُوۡرًا ٩ﶠ"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "وَاَمَّا مَنۡ اُوۡتِيَ كِتٰبَهٗ وَرَآءَ ظَهۡرِهٖ ١٠ﶫ"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "فَسَوۡفَ يَدۡعُوۡا ثُبُوۡرًا ١١ﶫ"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "وَّيَصۡلٰي سَعِيۡرًا ١٢ﶠ"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "اِنَّهٗ كَانَ فِيۡ٘ اَهۡلِهٖ مَسۡرُوۡرًا ١٣ﶠ"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "اِنَّهٗ ظَنَّ اَنۡ لَّنۡ يَّحُوۡرَ ١٤ﶕ"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "بَلٰ٘يﵑ اِنَّ رَبَّهٗ كَانَ بِهٖ بَصِيۡرًا ١٥ﶠ"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "فَلَا٘ اُقۡسِمُ بِالشَّفَقِ ١٦ﶫ"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "وَالَّيۡلِ وَمَا وَسَقَ ١٧ﶫ"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "وَالۡقَمَرِ اِذَا اتَّسَقَ ١٨ﶫ"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "لَتَرۡكَبُنَّ طَبَقًا عَنۡ طَبَقٍ ١٩ﶠ"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "فَمَا لَهُمۡ لَا يُؤۡمِنُوۡنَ ٢٠ﶫ"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "وَاِذَا قُرِئَ عَلَيۡهِمُ الۡقُرۡاٰنُ لَا يَسۡجُدُوۡنَ ٢١ﷂ"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "بَلِ الَّذِيۡنَ كَفَرُوۡا يُكَذِّبُوۡنَ ٢٢ﶛ"
        },
        {
            "chapter": 84,
            "verse": 23,
