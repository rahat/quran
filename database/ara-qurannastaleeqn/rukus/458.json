        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "يَوۡمَ يُدَعُّوۡنَ اِلٰي نَارِ جَهَنَّمَ دَعًّا ١٣ﶠ"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "هٰذِهِ النَّارُ الَّتِيۡ كُنۡتُمۡ بِهَا تُكَذِّبُوۡنَ ١٤"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "اَفَسِحۡرٌ هٰذَا٘ اَمۡ اَنۡتُمۡ لَا تُبۡصِرُوۡنَ ١٥"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "اِصۡلَوۡهَا فَاصۡبِرُوۡ٘ا اَوۡ لَا تَصۡبِرُوۡاﵐ سَوَآءٌ عَلَيۡكُمۡﵧ اِنَّمَا تُجۡزَوۡنَ مَا كُنۡتُمۡ تَعۡمَلُوۡنَ ١٦"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "اِنَّ الۡمُتَّقِيۡنَ فِيۡ جَنّٰتٍ وَّنَعِيۡمٍ ١٧ﶫ"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "فٰكِهِيۡنَ بِمَا٘ اٰتٰىهُمۡ رَبُّهُمۡﵐ وَوَقٰىهُمۡ رَبُّهُمۡ عَذَابَ الۡجَحِيۡمِ ١٨"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "كُلُوۡا وَاشۡرَبُوۡا هَنِيۡٓـًٔاۣ بِمَا كُنۡتُمۡ تَعۡمَلُوۡنَ ١٩ﶫ"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "مُتَّكِـِٕيۡنَ عَلٰي سُرُرٍ مَّصۡفُوۡفَةٍﵐ وَزَوَّجۡنٰهُمۡ بِحُوۡرٍ عِيۡنٍ ٢٠"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "وَالَّذِيۡنَ اٰمَنُوۡا وَاتَّبَعَتۡهُمۡ ذُرِّيَّتُهُمۡ بِاِيۡمَانٍ اَلۡحَقۡنَا بِهِمۡ ذُرِّيَّتَهُمۡ وَمَا٘ اَلَتۡنٰهُمۡ مِّنۡ عَمَلِهِمۡ مِّنۡ شَيۡءٍﵧ كُلُّ امۡرِئٍۣ بِمَا كَسَبَ رَهِيۡنٌ ٢١"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "وَاَمۡدَدۡنٰهُمۡ بِفَاكِهَةٍ وَّلَحۡمٍ مِّمَّا يَشۡتَهُوۡنَ ٢٢"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "يَتَنَازَعُوۡنَ فِيۡهَا كَاۡسًا لَّا لَغۡوٌ فِيۡهَا وَلَا تَاۡثِيۡمٌ ٢٣"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "وَيَطُوۡفُ عَلَيۡهِمۡ غِلۡمَانٌ لَّهُمۡ كَاَنَّهُمۡ لُؤۡلُؤٌ مَّكۡنُوۡنٌ ٢٤"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "وَاَقۡبَلَ بَعۡضُهُمۡ عَلٰي بَعۡضٍ يَّتَسَآءَلُوۡنَ ٢٥"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "قَالُوۡ٘ا اِنَّا كُنَّا قَبۡلُ فِيۡ٘ اَهۡلِنَا مُشۡفِقِيۡنَ ٢٦"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "فَمَنَّ اللّٰهُ عَلَيۡنَا وَوَقٰىنَا عَذَابَ السَّمُوۡمِ ٢٧"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "اِنَّا كُنَّا مِنۡ قَبۡلُ نَدۡعُوۡهُﵧ اِنَّهٗ هُوَ الۡبَرُّ الرَّحِيۡمُ ٢٨ﶒ"
        }
