{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "وَالشَّمۡسِ وَضُحٰىهَا ١ﷱ"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "وَالۡقَمَرِ اِذَا تَلٰىهَا ٢ﷱ"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "وَالنَّهَارِ اِذَا جَلّٰىهَا ٣ﷱ"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "وَالَّيۡلِ اِذَا يَغۡشٰىهَا ٤ﷱ"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "وَالسَّمَآءِ وَمَا بَنٰىهَا ٥ﷱ"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "وَالۡاَرۡضِ وَمَا طَحٰىهَا ٦ﷱ"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "وَنَفۡسٍ وَّمَا سَوّٰىهَا ٧ﷱ"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "فَاَلۡهَمَهَا فُجُوۡرَهَا وَتَقۡوٰىهَا ٨ﷱ"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "قَدۡ اَفۡلَحَ مَنۡ زَكّٰىهَا ٩ﷱ"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "وَقَدۡ خَابَ مَنۡ دَسّٰىهَا ١٠ﶠ"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "كَذَّبَتۡ ثَمُوۡدُ بِطَغۡوٰىهَا٘ ١١ﷱ"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "اِذِ انۣۡبَعَثَ اَشۡقٰىهَا ١٢ﷱ"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "فَقَالَ لَهُمۡ رَسُوۡلُ اللّٰهِ نَاقَةَ اللّٰهِ وَسُقۡيٰهَا ١٣ﶠ"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "فَكَذَّبُوۡهُ فَعَقَرُوۡهَاﶃ فَدَمۡدَمَ عَلَيۡهِمۡ رَبُّهُمۡ بِذَنۣۡبِهِمۡ فَسَوّٰىهَا ١٤ﷱ"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "وَلَا يَخَافُ عُقۡبٰهَا ١٥ﶒ"
        }
    ]
}