{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "اِنَّ شَجَرَتَ الزَّقُّوۡمِ ٤٣ﶫ"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "طَعَامُ الۡاَثِيۡمِ ٤٤ﶘ"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "كَالۡمُهۡلِﵑ يَغۡلِيۡ فِي الۡبُطُوۡنِ ٤٥ﶫ"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "كَغَلۡيِ الۡحَمِيۡمِ ٤٦"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "خُذُوۡهُ فَاعۡتِلُوۡهُ اِلٰي سَوَآءِ الۡجَحِيۡمِ ٤٧ﶫ"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "ثُمَّ صُبُّوۡا فَوۡقَ رَاۡسِهٖ مِنۡ عَذَابِ الۡحَمِيۡمِ ٤٨ﶠ"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "ذُقۡﵗ اِنَّكَ اَنۡتَ الۡعَزِيۡزُ الۡكَرِيۡمُ ٤٩"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "اِنَّ هٰذَا مَا كُنۡتُمۡ بِهٖ تَمۡتَرُوۡنَ ٥٠"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "اِنَّ الۡمُتَّقِيۡنَ فِيۡ مَقَامٍ اَمِيۡنٍ ٥١ﶫ"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "فِيۡ جَنّٰتٍ وَّعُيُوۡنٍ ٥٢ﶖ"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "يَّلۡبَسُوۡنَ مِنۡ سُنۡدُسٍ وَّاِسۡتَبۡرَقٍ مُّتَقٰبِلِيۡنَ ٥٣ﶖ"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "كَذٰلِكَﵴ وَزَوَّجۡنٰهُمۡ بِحُوۡرٍ عِيۡنٍ ٥٤ﶠ"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "يَدۡعُوۡنَ فِيۡهَا بِكُلِّ فَاكِهَةٍ اٰمِنِيۡنَ ٥٥ﶫ"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "لَا يَذُوۡقُوۡنَ فِيۡهَا الۡمَوۡتَ اِلَّا الۡمَوۡتَةَ الۡاُوۡلٰيﵐ وَوَقٰىهُمۡ عَذَابَ الۡجَحِيۡمِ ٥٦ﶫ"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "فَضۡلًا مِّنۡ رَّبِّكَﵧ ذٰلِكَ هُوَ الۡفَوۡزُ الۡعَظِيۡمُ ٥٧"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "فَاِنَّمَا يَسَّرۡنٰهُ بِلِسَانِكَ لَعَلَّهُمۡ يَتَذَكَّرُوۡنَ ٥٨"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "فَارۡتَقِبۡ اِنَّهُمۡ مُّرۡتَقِبُوۡنَ ٥٩ﶒ"
        }
    ]
}