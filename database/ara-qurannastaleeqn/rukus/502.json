{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "سَاَلَ سَآئِلٌۣ بِعَذَابٍ وَّاقِعٍ ١ﶫ"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "لِّلۡكٰفِرِيۡنَ لَيۡسَ لَهٗ دَافِعٌ ٢ﶫ"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "مِّنَ اللّٰهِ ذِي الۡمَعَارِجِ ٣ﶠ"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "تَعۡرُجُ الۡمَلٰٓئِكَةُ وَالرُّوۡحُ اِلَيۡهِ فِيۡ يَوۡمٍ كَانَ مِقۡدَارُهٗ خَمۡسِيۡنَ اَلۡفَ سَنَةٍ ٤ﶔ"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "فَاصۡبِرۡ صَبۡرًا جَمِيۡلًا ٥"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "اِنَّهُمۡ يَرَوۡنَهٗ بَعِيۡدًا ٦ﶫ"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "وَّنَرٰىهُ قَرِيۡبًا ٧ﶠ"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "يَوۡمَ تَكُوۡنُ السَّمَآءُ كَالۡمُهۡلِ ٨ﶫ"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "وَتَكُوۡنُ الۡجِبَالُ كَالۡعِهۡنِ ٩ﶫ"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "وَلَا يَسۡـَٔلُ حَمِيۡمٌ حَمِيۡمًا ١٠ﶖ"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يُّبَصَّرُوۡنَهُمۡﵧ يَوَدُّ الۡمُجۡرِمُ لَوۡ يَفۡتَدِيۡ مِنۡ عَذَابِ يَوۡمِئِذٍۣ بِبَنِيۡهِ ١١ﶫ"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "وَصَاحِبَتِهٖ وَاَخِيۡهِ ١٢ﶫ"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "وَفَصِيۡلَتِهِ الَّتِيۡ تُـٔۡوِيۡهِ ١٣ﶫ"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "وَمَنۡ فِي الۡاَرۡضِ جَمِيۡعًاﶈ ثُمَّ يُنۡجِيۡهِ ١٤ﶫ"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "كَلَّاﵧ اِنَّهَا لَظٰي ١٥ﶫ"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "نَزَّاعَةً لِّلشَّوٰي ١٦ﶗ"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "تَدۡعُوۡا مَنۡ اَدۡبَرَ وَتَوَلّٰي ١٧ﶫ"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "وَجَمَعَ فَاَوۡعٰي ١٨"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "اِنَّ الۡاِنۡسَانَ خُلِقَ هَلُوۡعًا ١٩ﶫ"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "اِذَا مَسَّهُ الشَّرُّ جَزُوۡعًا ٢٠ﶫ"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "وَّاِذَا مَسَّهُ الۡخَيۡرُ مَنُوۡعًا ٢١ﶫ"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "اِلَّا الۡمُصَلِّيۡنَ ٢٢ﶫ"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "الَّذِيۡنَ هُمۡ عَلٰي صَلَاتِهِمۡ دَآئِمُوۡنَ ٢٣ﷱ"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "وَالَّذِيۡنَ فِيۡ٘ اَمۡوَالِهِمۡ حَقٌّ مَّعۡلُوۡمٌ ٢٤ﷱ"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "لِّلسَّآئِلِ وَالۡمَحۡرُوۡمِ ٢٥ﷱ"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "وَالَّذِيۡنَ يُصَدِّقُوۡنَ بِيَوۡمِ الدِّيۡنِ ٢٦ﷱ"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "وَالَّذِيۡنَ هُمۡ مِّنۡ عَذَابِ رَبِّهِمۡ مُّشۡفِقُوۡنَ ٢٧ﶔ"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "اِنَّ عَذَابَ رَبِّهِمۡ غَيۡرُ مَاۡمُوۡنٍ ٢٨ﶝ"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "وَالَّذِيۡنَ هُمۡ لِفُرُوۡجِهِمۡ حٰفِظُوۡنَ ٢٩ﶫ"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "اِلَّا عَلٰ٘ي اَزۡوَاجِهِمۡ اَوۡ مَا مَلَكَتۡ اَيۡمَانُهُمۡ فَاِنَّهُمۡ غَيۡرُ مَلُوۡمِيۡنَ ٣٠ﶔ"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "فَمَنِ ابۡتَغٰي وَرَآءَ ذٰلِكَ فَاُولٰٓئِكَ هُمُ الۡعٰدُوۡنَ ٣١ﶔ"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "وَالَّذِيۡنَ هُمۡ لِاَمٰنٰتِهِمۡ وَعَهۡدِهِمۡ رٰعُوۡنَ ٣٢ﶟ"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "وَالَّذِيۡنَ هُمۡ بِشَهٰدٰتِهِمۡ قَآئِمُوۡنَ ٣٣ﷱ"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "وَالَّذِيۡنَ هُمۡ عَلٰي صَلَاتِهِمۡ يُحَافِظُوۡنَ ٣٤ﶠ"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "اُولٰٓئِكَ فِيۡ جَنّٰتٍ مُّكۡرَمُوۡنَ ٣٥ﷰ"
        }
    ]
}