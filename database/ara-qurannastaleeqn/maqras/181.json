{
    "maqras": [
        {
            "chapter": 37,
            "verse": 145,
            "text": "فَنَبَذۡنٰهُ بِالۡعَرَآءِ وَهُوَ سَقِيۡمٌ ١٤٥ﶔ"
        },
        {
            "chapter": 37,
            "verse": 146,
            "text": "وَاَنۣۡبَتۡنَا عَلَيۡهِ شَجَرَةً مِّنۡ يَّقۡطِيۡنٍ ١٤٦ﶔ"
        },
        {
            "chapter": 37,
            "verse": 147,
            "text": "وَاَرۡسَلۡنٰهُ اِلٰي مِائَةِ اَلۡفٍ اَوۡ يَزِيۡدُوۡنَ ١٤٧ﶔ"
        },
        {
            "chapter": 37,
            "verse": 148,
            "text": "فَاٰمَنُوۡا فَمَتَّعۡنٰهُمۡ اِلٰي حِيۡنٍ ١٤٨ﶠ"
        },
        {
            "chapter": 37,
            "verse": 149,
            "text": "فَاسۡتَفۡتِهِمۡ اَلِرَبِّكَ الۡبَنَاتُ وَلَهُمُ الۡبَنُوۡنَ ١٤٩ﶫ"
        },
        {
            "chapter": 37,
            "verse": 150,
            "text": "اَمۡ خَلَقۡنَا الۡمَلٰٓئِكَةَ اِنَاثًا وَّهُمۡ شٰهِدُوۡنَ ١٥٠"
        },
        {
            "chapter": 37,
            "verse": 151,
            "text": "اَلَا٘ اِنَّهُمۡ مِّنۡ اِفۡكِهِمۡ لَيَقُوۡلُوۡنَ ١٥١ﶫ"
        },
        {
            "chapter": 37,
            "verse": 152,
            "text": "وَلَدَ اللّٰهُﶈ وَاِنَّهُمۡ لَكٰذِبُوۡنَ ١٥٢"
        },
        {
            "chapter": 37,
            "verse": 153,
            "text": "اَصۡطَفَي الۡبَنَاتِ عَلَي الۡبَنِيۡنَ ١٥٣ﶠ"
        },
        {
            "chapter": 37,
            "verse": 154,
            "text": "مَا لَكُمۡﵴ كَيۡفَ تَحۡكُمُوۡنَ ١٥٤"
        },
        {
            "chapter": 37,
            "verse": 155,
            "text": "اَفَلَا تَذَكَّرُوۡنَ ١٥٥ﶔ"
        },
        {
            "chapter": 37,
            "verse": 156,
            "text": "اَمۡ لَكُمۡ سُلۡطٰنٌ مُّبِيۡنٌ ١٥٦ﶫ"
        },
        {
            "chapter": 37,
            "verse": 157,
            "text": "فَاۡتُوۡا بِكِتٰبِكُمۡ اِنۡ كُنۡتُمۡ صٰدِقِيۡنَ ١٥٧"
        },
        {
            "chapter": 37,
            "verse": 158,
            "text": "وَجَعَلُوۡا بَيۡنَهٗ وَبَيۡنَ الۡجِنَّةِ نَسَبًاﵧ وَلَقَدۡ عَلِمَتِ الۡجِنَّةُ اِنَّهُمۡ لَمُحۡضَرُوۡنَ ١٥٨ﶫ"
        },
        {
            "chapter": 37,
            "verse": 159,
            "text": "سُبۡحٰنَ اللّٰهِ عَمَّا يَصِفُوۡنَ ١٥٩ﶫ"
        },
        {
            "chapter": 37,
            "verse": 160,
            "text": "اِلَّا عِبَادَ اللّٰهِ الۡمُخۡلَصِيۡنَ ١٦٠"
        },
        {
            "chapter": 37,
            "verse": 161,
            "text": "فَاِنَّكُمۡ وَمَا تَعۡبُدُوۡنَ ١٦١ﶫ"
        },
        {
            "chapter": 37,
            "verse": 162,
            "text": "مَا٘ اَنۡتُمۡ عَلَيۡهِ بِفٰتِنِيۡنَ ١٦٢ﶫ"
        },
        {
            "chapter": 37,
            "verse": 163,
            "text": "اِلَّا مَنۡ هُوَ صَالِ الۡجَحِيۡمِ ١٦٣"
        },
        {
            "chapter": 37,
            "verse": 164,
            "text": "وَمَا مِنَّا٘ اِلَّا لَهٗ مَقَامٌ مَّعۡلُوۡمٌ ١٦٤ﶫ"
        },
        {
            "chapter": 37,
            "verse": 165,
            "text": "وَّاِنَّا لَنَحۡنُ الصَّآفُّوۡنَ ١٦٥ﶔ"
        },
        {
            "chapter": 37,
            "verse": 166,
            "text": "وَاِنَّا لَنَحۡنُ الۡمُسَبِّحُوۡنَ ١٦٦"
        },
        {
            "chapter": 37,
            "verse": 167,
            "text": "وَاِنۡ كَانُوۡا لَيَقُوۡلُوۡنَ ١٦٧ﶫ"
        },
        {
            "chapter": 37,
            "verse": 168,
            "text": "لَوۡ اَنَّ عِنۡدَنَا ذِكۡرًا مِّنَ الۡاَوَّلِيۡنَ ١٦٨ﶫ"
        },
        {
            "chapter": 37,
            "verse": 169,
            "text": "لَكُنَّا عِبَادَ اللّٰهِ الۡمُخۡلَصِيۡنَ ١٦٩"
        },
        {
            "chapter": 37,
            "verse": 170,
            "text": "فَكَفَرُوۡا بِهٖ فَسَوۡفَ يَعۡلَمُوۡنَ ١٧٠"
        },
        {
            "chapter": 37,
            "verse": 171,
            "text": "وَلَقَدۡ سَبَقَتۡ كَلِمَتُنَا لِعِبَادِنَا الۡمُرۡسَلِيۡنَ ١٧١ﶗ"
        },
        {
            "chapter": 37,
            "verse": 172,
            "text": "اِنَّهُمۡ لَهُمُ الۡمَنۡصُوۡرُوۡنَ ١٧٢ﶝ"
        },
        {
            "chapter": 37,
            "verse": 173,
            "text": "وَاِنَّ جُنۡدَنَا لَهُمُ الۡغٰلِبُوۡنَ ١٧٣"
        },
        {
            "chapter": 37,
            "verse": 174,
            "text": "فَتَوَلَّ عَنۡهُمۡ حَتّٰي حِيۡنٍ ١٧٤ﶫ"
        },
        {
            "chapter": 37,
            "verse": 175,
            "text": "وَّاَبۡصِرۡهُمۡ فَسَوۡفَ يُبۡصِرُوۡنَ ١٧٥"
        },
        {
            "chapter": 37,
            "verse": 176,
            "text": "اَفَبِعَذَابِنَا يَسۡتَعۡجِلُوۡنَ ١٧٦"
        },
        {
            "chapter": 37,
            "verse": 177,
            "text": "فَاِذَا نَزَلَ بِسَاحَتِهِمۡ فَسَآءَ صَبَاحُ الۡمُنۡذَرِيۡنَ ١٧٧"
        },
        {
            "chapter": 37,
            "verse": 178,
            "text": "وَتَوَلَّ عَنۡهُمۡ حَتّٰي حِيۡنٍ ١٧٨ﶫ"
        },
        {
            "chapter": 37,
            "verse": 179,
            "text": "وَّاَبۡصِرۡ فَسَوۡفَ يُبۡصِرُوۡنَ ١٧٩"
        },
        {
            "chapter": 37,
            "verse": 180,
            "text": "سُبۡحٰنَ رَبِّكَ رَبِّ الۡعِزَّةِ عَمَّا يَصِفُوۡنَ ١٨٠ﶔ"
        },
        {
            "chapter": 37,
            "verse": 181,
            "text": "وَسَلٰمٌ عَلَي الۡمُرۡسَلِيۡنَ ١٨١ﶔ"
        },
        {
            "chapter": 37,
            "verse": 182,
            "text": "وَالۡحَمۡدُ لِلّٰهِ رَبِّ الۡعٰلَمِيۡنَ ١٨٢ﶒ"
        },
        {
            "chapter": 38,
            "verse": 1,
            "text": "صٓ وَالۡقُرۡاٰنِ ذِي الذِّكۡرِ ١ﶠ"
        },
        {
            "chapter": 38,
            "verse": 2,
            "text": "بَلِ الَّذِيۡنَ كَفَرُوۡا فِيۡ عِزَّةٍ وَّشِقَاقٍ ٢"
        },
        {
            "chapter": 38,
            "verse": 3,
            "text": "كَمۡ اَهۡلَكۡنَا مِنۡ قَبۡلِهِمۡ مِّنۡ قَرۡنٍ فَنَادَوۡا وَّلَاتَ حِيۡنَ مَنَاصٍ ٣"
        },
        {
            "chapter": 38,
            "verse": 4,
            "text": "وَعَجِبُوۡ٘ا اَنۡ جَآءَهُمۡ مُّنۡذِرٌ مِّنۡهُمۡﵟ وَقَالَ الۡكٰفِرُوۡنَ هٰذَا سٰحِرٌ كَذَّابٌ ٤ﶗ"
        },
        {
            "chapter": 38,
            "verse": 5,
            "text": "اَجَعَلَ الۡاٰلِهَةَ اِلٰهًا وَّاحِدًاﵗ اِنَّ هٰذَا لَشَيۡءٌ عُجَابٌ ٥"
        },
        {
            "chapter": 38,
            "verse": 6,
            "text": "وَانۡطَلَقَ الۡمَلَاُ مِنۡهُمۡ اَنِ امۡشُوۡا وَاصۡبِرُوۡا عَلٰ٘ي اٰلِهَتِكُمۡﵗ اِنَّ هٰذَا لَشَيۡءٌ يُّرَادُ ٦ﶔ"
        },
        {
            "chapter": 38,
            "verse": 7,
            "text": "مَا سَمِعۡنَا بِهٰذَا فِي الۡمِلَّةِ الۡاٰخِرَةِﵗ اِنۡ هٰذَا٘ اِلَّا اخۡتِلَاقٌ ٧ﶗ"
        },
        {
            "chapter": 38,
            "verse": 8,
            "text": "ءَاُنۡزِلَ عَلَيۡهِ الذِّكۡرُ مِنۣۡ بَيۡنِنَاﵧ بَلۡ هُمۡ فِيۡ شَكٍّ مِّنۡ ذِكۡرِيۡﵐ بَلۡ لَّمَّا يَذُوۡقُوۡا عَذَابِ ٨ﶠ"
        },
        {
            "chapter": 38,
            "verse": 9,
            "text": "اَمۡ عِنۡدَهُمۡ خَزَآئِنُ رَحۡمَةِ رَبِّكَ الۡعَزِيۡزِ الۡوَهَّابِ ٩ﶔ"
        },
        {
            "chapter": 38,
            "verse": 10,
            "text": "اَمۡ لَهُمۡ مُّلۡكُ السَّمٰوٰتِ وَالۡاَرۡضِ وَمَا بَيۡنَهُمَاﵴ فَلۡيَرۡتَقُوۡا فِي الۡاَسۡبَابِ ١٠"
        },
        {
            "chapter": 38,
            "verse": 11,
            "text": "جُنۡدٌ مَّا هُنَالِكَ مَهۡزُوۡمٌ مِّنَ الۡاَحۡزَابِ ١١"
        },
        {
            "chapter": 38,
            "verse": 12,
            "text": "كَذَّبَتۡ قَبۡلَهُمۡ قَوۡمُ نُوۡحٍ وَّعَادٌ وَّفِرۡعَوۡنُ ذُو الۡاَوۡتَادِ ١٢ﶫ"
        },
        {
            "chapter": 38,
            "verse": 13,
            "text": "وَثَمُوۡدُ وَقَوۡمُ لُوۡطٍ وَّاَصۡحٰبُ لۡـَٔيۡكَةِﵧ اُولٰٓئِكَ الۡاَحۡزَابُ ١٣"
        },
        {
            "chapter": 38,
            "verse": 14,
            "text": "اِنۡ كُلٌّ اِلَّا كَذَّبَ الرُّسُلَ فَحَقَّ عِقَابِ ١٤ﶒ"
        },
        {
            "chapter": 38,
            "verse": 15,
            "text": "وَمَا يَنۡظُرُ هٰ٘ؤُلَآءِ اِلَّا صَيۡحَةً وَّاحِدَةً مَّا لَهَا مِنۡ فَوَاقٍ ١٥"
        },
        {
            "chapter": 38,
            "verse": 16,
            "text": "وَقَالُوۡا رَبَّنَا عَجِّلۡ لَّنَا قِطَّنَا قَبۡلَ يَوۡمِ الۡحِسَابِ ١٦"
        },
        {
            "chapter": 38,
            "verse": 17,
            "text": "اِصۡبِرۡ عَلٰي مَا يَقُوۡلُوۡنَ وَاذۡكُرۡ عَبۡدَنَا دَاوٗدَ ذَا الۡاَيۡدِﵐ اِنَّهٗ٘ اَوَّابٌ ١٧"
        },
        {
            "chapter": 38,
            "verse": 18,
            "text": "اِنَّا سَخَّرۡنَا الۡجِبَالَ مَعَهٗ يُسَبِّحۡنَ بِالۡعَشِيِّ وَالۡاِشۡرَاقِ ١٨ﶫ"
        },
        {
            "chapter": 38,
            "verse": 19,
            "text": "وَالطَّيۡرَ مَحۡشُوۡرَةًﵧ كُلٌّ لَّهٗ٘ اَوَّابٌ ١٩"
        },
        {
            "chapter": 38,
            "verse": 20,
            "text": "وَشَدَدۡنَا مُلۡكَهٗ وَاٰتَيۡنٰهُ الۡحِكۡمَةَ وَفَصۡلَ الۡخِطَابِ ٢٠"
        }
    ]
}