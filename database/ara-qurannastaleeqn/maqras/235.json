{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "اِذَا السَّمَآءُ انۡفَطَرَتۡ ١ﶫ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "وَاِذَا الۡكَوَاكِبُ انۡتَثَرَتۡ ٢ﶫ"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "وَاِذَا الۡبِحَارُ فُجِّرَتۡ ٣ﶫ"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "وَاِذَا الۡقُبُوۡرُ بُعۡثِرَتۡ ٤ﶫ"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "عَلِمَتۡ نَفۡسٌ مَّا قَدَّمَتۡ وَاَخَّرَتۡ ٥ﶠ"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "يٰ٘اَيُّهَا الۡاِنۡسَانُ مَا غَرَّكَ بِرَبِّكَ الۡكَرِيۡمِ ٦ﶫ"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "الَّذِيۡ خَلَقَكَ فَسَوّٰىكَ فَعَدَلَكَ ٧ﶫ"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "فِيۡ٘ اَيِّ صُوۡرَةٍ مَّا شَآءَ رَكَّبَكَ ٨ﶠ"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "كَلَّا بَلۡ تُكَذِّبُوۡنَ بِالدِّيۡنِ ٩ﶫ"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "وَاِنَّ عَلَيۡكُمۡ لَحٰفِظِيۡنَ ١٠ﶫ"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كِرَامًا كٰتِبِيۡنَ ١١ﶫ"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "يَعۡلَمُوۡنَ مَا تَفۡعَلُوۡنَ ١٢"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "اِنَّ الۡاَبۡرَارَ لَفِيۡ نَعِيۡمٍ ١٣ﶫ"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "وَّاِنَّ الۡفُجَّارَ لَفِيۡ جَحِيۡمٍ ١٤ﶫ"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "يَّصۡلَوۡنَهَا يَوۡمَ الدِّيۡنِ ١٥"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "وَمَا هُمۡ عَنۡهَا بِغَآئِبِيۡنَ ١٦ﶠ"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "وَمَا٘ اَدۡرٰىكَ مَا يَوۡمُ الدِّيۡنِ ١٧ﶫ"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "ثُمَّ مَا٘ اَدۡرٰىكَ مَا يَوۡمُ الدِّيۡنِ ١٨ﶠ"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "يَوۡمَ لَا تَمۡلِكُ نَفۡسٌ لِّنَفۡسٍ شَيۡـًٔاﵧ وَالۡاَمۡرُ يَوۡمَئِذٍ لِّلّٰهِ ١٩ﶒ"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "وَيۡلٌ لِّلۡمُطَفِّفِيۡنَ ١ﶫ"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "الَّذِيۡنَ اِذَا اكۡتَالُوۡا عَلَي النَّاسِ يَسۡتَوۡفُوۡنَ ٢ﶛ"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "وَاِذَا كَالُوۡهُمۡ اَوۡ وَّزَنُوۡهُمۡ يُخۡسِرُوۡنَ ٣ﶠ"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "اَلَا يَظُنُّ اُولٰٓئِكَ اَنَّهُمۡ مَّبۡعُوۡثُوۡنَ ٤ﶫ"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "لِيَوۡمٍ عَظِيۡمٍ ٥ﶫ"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "يَّوۡمَ يَقُوۡمُ النَّاسُ لِرَبِّ الۡعٰلَمِيۡنَ ٦ﶠ"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "كَلَّا٘ اِنَّ كِتٰبَ الۡفُجَّارِ لَفِيۡ سِجِّيۡنٍ ٧ﶠ"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "وَمَا٘ اَدۡرٰىكَ مَا سِجِّيۡنٌ ٨ﶠ"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "كِتٰبٌ مَّرۡقُوۡمٌ ٩ﶠ"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "وَيۡلٌ يَّوۡمَئِذٍ لِّلۡمُكَذِّبِيۡنَ ١٠ﶫ"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "الَّذِيۡنَ يُكَذِّبُوۡنَ بِيَوۡمِ الدِّيۡنِ ١١ﶠ"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "وَمَا يُكَذِّبُ بِهٖ٘ اِلَّا كُلُّ مُعۡتَدٍ اَثِيۡمٍ ١٢ﶫ"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "اِذَا تُتۡلٰي عَلَيۡهِ اٰيٰتُنَا قَالَ اَسَاطِيۡرُ الۡاَوَّلِيۡنَ ١٣ﶠ"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "كَلَّا بَلۡﶌ رَانَ عَلٰي قُلُوۡبِهِمۡ مَّا كَانُوۡا يَكۡسِبُوۡنَ ١٤"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "كَلَّا٘ اِنَّهُمۡ عَنۡ رَّبِّهِمۡ يَوۡمَئِذٍ لَّمَحۡجُوۡبُوۡنَ ١٥ﶠ"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "ثُمَّ اِنَّهُمۡ لَصَالُوا الۡجَحِيۡمِ ١٦ﶠ"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "ثُمَّ يُقَالُ هٰذَا الَّذِيۡ كُنۡتُمۡ بِهٖ تُكَذِّبُوۡنَ ١٧ﶠ"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "كَلَّا٘ اِنَّ كِتٰبَ الۡاَبۡرَارِ لَفِيۡ عِلِّيِّيۡنَ ١٨ﶠ"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "وَمَا٘ اَدۡرٰىكَ مَا عِلِّيُّوۡنَ ١٩ﶠ"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "كِتٰبٌ مَّرۡقُوۡمٌ ٢٠ﶫ"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "يَّشۡهَدُهُ الۡمُقَرَّبُوۡنَ ٢١ﶠ"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "اِنَّ الۡاَبۡرَارَ لَفِيۡ نَعِيۡمٍ ٢٢ﶫ"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "عَلَي الۡاَرَآئِكِ يَنۡظُرُوۡنَ ٢٣ﶫ"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "تَعۡرِفُ فِيۡ وُجُوۡهِهِمۡ نَضۡرَةَ النَّعِيۡمِ ٢٤ﶔ"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "يُسۡقَوۡنَ مِنۡ رَّحِيۡقٍ مَّخۡتُوۡمٍ ٢٥ﶫ"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "خِتٰمُهٗ مِسۡكٌﵧ وَفِيۡ ذٰلِكَ فَلۡيَتَنَافَسِ الۡمُتَنٰفِسُوۡنَ ٢٦ﶠ"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "وَمِزَاجُهٗ مِنۡ تَسۡنِيۡمٍ ٢٧ﶫ"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "عَيۡنًا يَّشۡرَبُ بِهَا الۡمُقَرَّبُوۡنَ ٢٨ﶠ"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "اِنَّ الَّذِيۡنَ اَجۡرَمُوۡا كَانُوۡا مِنَ الَّذِيۡنَ اٰمَنُوۡا يَضۡحَكُوۡنَ ٢٩ﶛ"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "وَاِذَا مَرُّوۡا بِهِمۡ يَتَغَامَزُوۡنَ ٣٠ﶛ"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "وَاِذَا انۡقَلَبُوۡ٘ا اِلٰ٘ي اَهۡلِهِمُ انۡقَلَبُوۡا فَكِهِيۡنَ ٣١ﶛ"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "وَاِذَا رَاَوۡهُمۡ قَالُوۡ٘ا اِنَّ هٰ٘ؤُلَآءِ لَضَآلُّوۡنَ ٣٢ﶫ"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "وَمَا٘ اُرۡسِلُوۡا عَلَيۡهِمۡ حٰفِظِيۡنَ ٣٣ﶠ"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "فَالۡيَوۡمَ الَّذِيۡنَ اٰمَنُوۡا مِنَ الۡكُفَّارِ يَضۡحَكُوۡنَ ٣٤ﶫ"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "عَلَي الۡاَرَآئِكِﶈ يَنۡظُرُوۡنَ ٣٥ﶠ"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "هَلۡ ثُوِّبَ الۡكُفَّارُ مَا كَانُوۡا يَفۡعَلُوۡنَ ٣٦ﶒ"
        }
    ]
}