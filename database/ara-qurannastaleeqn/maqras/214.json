{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "اِذَا وَقَعَتِ الۡوَاقِعَةُ ١ﶫ"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "لَيۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ ٢ﶭ"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "خَافِضَةٌ رَّافِعَةٌ ٣ﶫ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "اِذَا رُجَّتِ الۡاَرۡضُ رَجًّا ٤ﶫ"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وَّبُسَّتِ الۡجِبَالُ بَسًّا ٥ﶫ"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "فَكَانَتۡ هَبَآءً مُّنۣۡبَثًّا ٦ﶫ"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وَّكُنۡتُمۡ اَزۡوَاجًا ثَلٰثَةً ٧ﶠ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "فَاَصۡحٰبُ الۡمَيۡمَنَةِﵿ مَا٘ اَصۡحٰبُ الۡمَيۡمَنَةِ ٨ﶠ"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "وَاَصۡحٰبُ الۡمَشۡـَٔمَةِﵿ مَا٘ اَصۡحٰبُ الۡمَشۡـَٔمَةِ ٩ﶠ"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "وَالسّٰبِقُوۡنَ السّٰبِقُوۡنَ ١٠ﶫ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "اُولٰٓئِكَ الۡمُقَرَّبُوۡنَ ١١ﶔ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "فِيۡ جَنّٰتِ النَّعِيۡمِ ١٢"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "ثُلَّةٌ مِّنَ الۡاَوَّلِيۡنَ ١٣ﶫ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "وَقَلِيۡلٌ مِّنَ الۡاٰخِرِيۡنَ ١٤ﶠ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "عَلٰي سُرُرٍ مَّوۡضُوۡنَةٍ ١٥ﶫ"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "مُّتَّكِـِٕيۡنَ عَلَيۡهَا مُتَقٰبِلِيۡنَ ١٦"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "يَطُوۡفُ عَلَيۡهِمۡ وِلۡدَانٌ مُّخَلَّدُوۡنَ ١٧ﶫ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِاَكۡوَابٍ وَّاَبَارِيۡقَﵿ وَكَاۡسٍ مِّنۡ مَّعِيۡنٍ ١٨ﶫ"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا يُصَدَّعُوۡنَ عَنۡهَا وَلَا يُنۡزِفُوۡنَ ١٩ﶫ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَاكِهَةٍ مِّمَّا يَتَخَيَّرُوۡنَ ٢٠ﶫ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَيۡرٍ مِّمَّا يَشۡتَهُوۡنَ ٢١ﶠ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُوۡرٌ عِيۡنٌ ٢٢ﶫ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَاَمۡثَالِ اللُّؤۡلُؤِ الۡمَكۡنُوۡنِ ٢٣ﶔ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَآءًۣ بِمَا كَانُوۡا يَعۡمَلُوۡنَ ٢٤"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا يَسۡمَعُوۡنَ فِيۡهَا لَغۡوًا وَّلَا تَاۡثِيۡمًا ٢٥ﶫ"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "اِلَّا قِيۡلًا سَلٰمًا سَلٰمًا ٢٦"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَاَصۡحٰبُ الۡيَمِيۡنِﵿ مَا٘ اَصۡحٰبُ الۡيَمِيۡنِ ٢٧ﶠ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِيۡ سِدۡرٍ مَّخۡضُوۡدٍ ٢٨ﶫ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَّطَلۡحٍ مَّنۡضُوۡدٍ ٢٩ﶫ"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَّظِلٍّ مَّمۡدُوۡدٍ ٣٠ﶫ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَّمَآءٍ مَّسۡكُوۡبٍ ٣١ﶫ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَّفَاكِهَةٍ كَثِيۡرَةٍ ٣٢ﶫ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوۡعَةٍ وَّلَا مَمۡنُوۡعَةٍ ٣٣ﶫ"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَّفُرُشٍ مَّرۡفُوۡعَةٍ ٣٤ﶠ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "اِنَّا٘ اَنۡشَاۡنٰهُنَّ اِنۡشَآءً ٣٥ﶫ"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنٰهُنَّ اَبۡكَارًا ٣٦ﶫ"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرُبًا اَتۡرَابًا ٣٧ﶫ"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّاَصۡحٰبِ الۡيَمِيۡنِ ٣٨ﷰ"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "ثُلَّةٌ مِّنَ الۡاَوَّلِيۡنَ ٣٩ﶫ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "وَثُلَّةٌ مِّنَ الۡاٰخِرِيۡنَ ٤٠ﶠ"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "وَاَصۡحٰبُ الشِّمَالِﵿ مَا٘ اَصۡحٰبُ الشِّمَالِ ٤١ﶠ"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "فِيۡ سَمُوۡمٍ وَّحَمِيۡمٍ ٤٢ﶫ"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "وَّظِلٍّ مِّنۡ يَّحۡمُوۡمٍ ٤٣ﶫ"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "لَّا بَارِدٍ وَّلَا كَرِيۡمٍ ٤٤"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "اِنَّهُمۡ كَانُوۡا قَبۡلَ ذٰلِكَ مُتۡرَفِيۡنَ ٤٥ﶗ"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "وَكَانُوۡا يُصِرُّوۡنَ عَلَي الۡحِنۡثِ الۡعَظِيۡمِ ٤٦ﶔ"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "وَكَانُوۡا يَقُوۡلُوۡنَﵿ اَئِذَا مِتۡنَا وَكُنَّا تُرَابًا وَّعِظَامًا ءَاِنَّا لَمَبۡعُوۡثُوۡنَ ٤٧ﶫ"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "اَوَ اٰبَآؤُنَا الۡاَوَّلُوۡنَ ٤٨"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "قُلۡ اِنَّ الۡاَوَّلِيۡنَ وَالۡاٰخِرِيۡنَ ٤٩ﶫ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "لَمَجۡمُوۡعُوۡنَﵿ اِلٰي مِيۡقَاتِ يَوۡمٍ مَّعۡلُوۡمٍ ٥٠"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "ثُمَّ اِنَّكُمۡ اَيُّهَا الضَّآلُّوۡنَ الۡمُكَذِّبُوۡنَ ٥١ﶫ"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "لَاٰكِلُوۡنَ مِنۡ شَجَرٍ مِّنۡ زَقُّوۡمٍ ٥٢ﶫ"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "فَمَالِـُٔوۡنَ مِنۡهَا الۡبُطُوۡنَ ٥٣ﶔ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "فَشٰرِبُوۡنَ عَلَيۡهِ مِنَ الۡحَمِيۡمِ ٥٤ﶔ"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "فَشٰرِبُوۡنَ شُرۡبَ الۡهِيۡمِ ٥٥ﶠ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "هٰذَا نُزُلُهُمۡ يَوۡمَ الدِّيۡنِ ٥٦ﶠ"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "نَحۡنُ خَلَقۡنٰكُمۡ فَلَوۡلَا تُصَدِّقُوۡنَ ٥٧"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "اَفَرَءَيۡتُمۡ مَّا تُمۡنُوۡنَ ٥٨ﶠ"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "ءَاَنۡتُمۡ تَخۡلُقُوۡنَهٗ٘ اَمۡ نَحۡنُ الۡخٰلِقُوۡنَ ٥٩"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "نَحۡنُ قَدَّرۡنَا بَيۡنَكُمُ الۡمَوۡتَ وَمَا نَحۡنُ بِمَسۡبُوۡقِيۡنَ ٦٠ﶫ"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "عَلٰ٘ي اَنۡ نُّبَدِّلَ اَمۡثَالَكُمۡ وَنُنۡشِئَكُمۡ فِيۡ مَا لَا تَعۡلَمُوۡنَ ٦١"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "وَلَقَدۡ عَلِمۡتُمُ النَّشۡاَةَ الۡاُوۡلٰي فَلَوۡلَا تَذَكَّرُوۡنَ ٦٢"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "اَفَرَءَيۡتُمۡ مَّا تَحۡرُثُوۡنَ ٦٣ﶠ"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "ءَاَنۡتُمۡ تَزۡرَعُوۡنَهٗ٘ اَمۡ نَحۡنُ الزّٰرِعُوۡنَ ٦٤"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "لَوۡ نَشَآءُ لَجَعَلۡنٰهُ حُطَامًا فَظَلۡتُمۡ تَفَكَّهُوۡنَ ٦٥"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "اِنَّا لَمُغۡرَمُوۡنَ ٦٦ﶫ"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بَلۡ نَحۡنُ مَحۡرُوۡمُوۡنَ ٦٧"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "اَفَرَءَيۡتُمُ الۡمَآءَ الَّذِيۡ تَشۡرَبُوۡنَ ٦٨ﶠ"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "ءَاَنۡتُمۡ اَنۡزَلۡتُمُوۡهُ مِنَ الۡمُزۡنِ اَمۡ نَحۡنُ الۡمُنۡزِلُوۡنَ ٦٩"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "لَوۡ نَشَآءُ جَعَلۡنٰهُ اُجَاجًا فَلَوۡلَا تَشۡكُرُوۡنَ ٧٠"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "اَفَرَءَيۡتُمُ النَّارَ الَّتِيۡ تُوۡرُوۡنَ ٧١ﶠ"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "ءَاَنۡتُمۡ اَنۡشَاۡتُمۡ شَجَرَتَهَا٘ اَمۡ نَحۡنُ الۡمُنۡشِـُٔوۡنَ ٧٢"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "نَحۡنُ جَعَلۡنٰهَا تَذۡكِرَةً وَّمَتَاعًا لِّلۡمُقۡوِيۡنَ ٧٣ﶔ"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "فَسَبِّحۡ بِاسۡمِ رَبِّكَ الۡعَظِيۡمِ ٧٤ﶸ"
        }
    ]
}