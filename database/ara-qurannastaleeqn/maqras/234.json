{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "عَبَسَ وَتَوَلّٰ٘ي ١ﶫ"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "اَنۡ جَآءَهُ الۡاَعۡمٰي ٢ﶠ"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "وَمَا يُدۡرِيۡكَ لَعَلَّهٗ يَزَّكّٰ٘ي ٣ﶫ"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "اَوۡ يَذَّكَّرُ فَتَنۡفَعَهُ الذِّكۡرٰي ٤ﶠ"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اَمَّا مَنِ اسۡتَغۡنٰي ٥ﶫ"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "فَاَنۡتَ لَهٗ تَصَدّٰي ٦ﶠ"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "وَمَا عَلَيۡكَ اَلَّا يَزَّكّٰي ٧ﶠ"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "وَاَمَّا مَنۡ جَآءَكَ يَسۡعٰي ٨ﶫ"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "وَهُوَ يَخۡشٰي ٩ﶫ"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "فَاَنۡتَ عَنۡهُ تَلَهّٰي ١٠ﶔ"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "كَلَّا٘ اِنَّهَا تَذۡكِرَةٌ ١١ﶔ"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "فَمَنۡ شَآءَ ذَكَرَهٗ ١٢ﶭ"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "فِيۡ صُحُفٍ مُّكَرَّمَةٍ ١٣ﶫ"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "مَّرۡفُوۡعَةٍ مُّطَهَّرَةٍ ١٤ﶫ"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "ۣبِاَيۡدِيۡ سَفَرَةٍ ١٥ﶫ"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "كِرَامٍۣ بَرَرَةٍ ١٦ﶠ"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "قُتِلَ الۡاِنۡسَانُ مَا٘ اَكۡفَرَهٗ ١٧ﶠ"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "مِنۡ اَيِّ شَيۡءٍ خَلَقَهٗ ١٨ﶠ"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "مِنۡ نُّطۡفَةٍﵧ خَلَقَهٗ فَقَدَّرَهٗ ١٩ﶫ"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "ثُمَّ السَّبِيۡلَ يَسَّرَهٗ ٢٠ﶫ"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "ثُمَّ اَمَاتَهٗ فَاَقۡبَرَهٗ ٢١ﶫ"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "ثُمَّ اِذَا شَآءَ اَنۡشَرَهٗ ٢٢ﶠ"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "كَلَّا لَمَّا يَقۡضِ مَا٘ اَمَرَهٗ ٢٣ﶠ"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "فَلۡيَنۡظُرِ الۡاِنۡسَانُ اِلٰي طَعَامِهٖ٘ ٢٤ﶫ"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "اَنَّا صَبَبۡنَا الۡمَآءَ صَبًّا ٢٥ﶫ"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "ثُمَّ شَقَقۡنَا الۡاَرۡضَ شَقًّا ٢٦ﶫ"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "فَاَنۣۡبَتۡنَا فِيۡهَا حَبًّا ٢٧ﶫ"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "وَّعِنَبًا وَّقَضۡبًا ٢٨ﶫ"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "وَّزَيۡتُوۡنًا وَّنَخۡلًا ٢٩ﶫ"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "وَّحَدَآئِقَ غُلۡبًا ٣٠ﶫ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "وَّفَاكِهَةً وَّاَبًّا ٣١ﶫ"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "مَّتَاعًا لَّكُمۡ وَلِاَنۡعَامِكُمۡ ٣٢ﶠ"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "فَاِذَا جَآءَتِ الصَّآخَّةُ ٣٣ﶚ"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "يَوۡمَ يَفِرُّ الۡمَرۡءُ مِنۡ اَخِيۡهِ ٣٤ﶫ"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "وَاُمِّهٖ وَاَبِيۡهِ ٣٥ﶫ"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "وَصَاحِبَتِهٖ وَبَنِيۡهِ ٣٦ﶠ"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "لِكُلِّ امۡرِئٍ مِّنۡهُمۡ يَوۡمَئِذٍ شَاۡنٌ يُّغۡنِيۡهِ ٣٧ﶠ"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "وُجُوۡهٌ يَّوۡمَئِذٍ مُّسۡفِرَةٌ ٣٨ﶫ"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "ضَاحِكَةٌ مُّسۡتَبۡشِرَةٌ ٣٩ﶔ"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "وَوُجُوۡهٌ يَّوۡمَئِذٍ عَلَيۡهَا غَبَرَةٌ ٤٠ﶫ"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "تَرۡهَقُهَا قَتَرَةٌ ٤١ﶠ"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اُولٰٓئِكَ هُمُ الۡكَفَرَةُ الۡفَجَرَةُ ٤٢ﶒ"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "اِذَا الشَّمۡسُ كُوِّرَتۡ ١ﶟ"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "وَاِذَا النُّجُوۡمُ انۡكَدَرَتۡ ٢ﶟ"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "وَاِذَا الۡجِبَالُ سُيِّرَتۡ ٣ﶟ"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "وَاِذَا الۡعِشَارُ عُطِّلَتۡ ٤ﶟ"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "وَاِذَا الۡوُحُوۡشُ حُشِرَتۡ ٥ﶟ"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "وَاِذَا الۡبِحَارُ سُجِّرَتۡ ٦ﶟ"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "وَاِذَا النُّفُوۡسُ زُوِّجَتۡ ٧ﶟ"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "وَاِذَا الۡمَوۡءٗدَةُ سُئِلَتۡ ٨ﶟ"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "بِاَيِّ ذَنۣۡبٍ قُتِلَتۡ ٩ﶔ"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "وَاِذَا الصُّحُفُ نُشِرَتۡ ١٠ﶟ"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "وَاِذَا السَّمَآءُ كُشِطَتۡ ١١ﶟ"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "وَاِذَا الۡجَحِيۡمُ سُعِّرَتۡ ١٢ﶟ"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "وَاِذَا الۡجَنَّةُ اُزۡلِفَتۡ ١٣ﶟ"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "عَلِمَتۡ نَفۡسٌ مَّا٘ اَحۡضَرَتۡ ١٤ﶠ"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "فَلَا٘ اُقۡسِمُ بِالۡخُنَّسِ ١٥ﶫ"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "الۡجَوَارِ الۡكُنَّسِ ١٦ﶫ"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "وَالَّيۡلِ اِذَا عَسۡعَسَ ١٧ﶫ"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "وَالصُّبۡحِ اِذَا تَنَفَّسَ ١٨ﶫ"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "اِنَّهٗ لَقَوۡلُ رَسُوۡلٍ كَرِيۡمٍ ١٩ﶫ"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "ذِيۡ قُوَّةٍ عِنۡدَ ذِي الۡعَرۡشِ مَكِيۡنٍ ٢٠ﶫ"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "مُّطَاعٍ ثَمَّ اَمِيۡنٍ ٢١ﶠ"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "وَمَا صَاحِبُكُمۡ بِمَجۡنُوۡنٍ ٢٢ﶔ"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "وَلَقَدۡ رَاٰهُ بِالۡاُفُقِ الۡمُبِيۡنِ ٢٣ﶔ"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "وَمَا هُوَ عَلَي الۡغَيۡبِ بِضَنِيۡنٍ ٢٤ﶔ"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "وَمَا هُوَ بِقَوۡلِ شَيۡطٰنٍ رَّجِيۡمٍ ٢٥ﶫ"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "فَاَيۡنَ تَذۡهَبُوۡنَ ٢٦ﶠ"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "اِنۡ هُوَ اِلَّا ذِكۡرٌ لِّلۡعٰلَمِيۡنَ ٢٧ﶫ"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "لِمَنۡ شَآءَ مِنۡكُمۡ اَنۡ يَّسۡتَقِيۡمَ ٢٨ﶠ"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "وَمَا تَشَآءُوۡنَ اِلَّا٘ اَنۡ يَّشَآءَ اللّٰهُ رَبُّ الۡعٰلَمِيۡنَ ٢٩ﶒ"
        }
    ]
}