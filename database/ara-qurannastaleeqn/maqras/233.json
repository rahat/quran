{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "عَمَّ يَتَسَآءَلُوۡنَ ١ﶔ"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "عَنِ النَّبَاِ الۡعَظِيۡمِ ٢ﶫ"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "الَّذِيۡ هُمۡ فِيۡهِ مُخۡتَلِفُوۡنَ ٣ﶠ"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "كَلَّا سَيَعۡلَمُوۡنَ ٤ﶫ"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ثُمَّ كَلَّا سَيَعۡلَمُوۡنَ ٥"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "اَلَمۡ نَجۡعَلِ الۡاَرۡضَ مِهٰدًا ٦ﶫ"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "وَّالۡجِبَالَ اَوۡتَادًا ٧ﶫ"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "وَّخَلَقۡنٰكُمۡ اَزۡوَاجًا ٨ﶫ"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "وَّجَعَلۡنَا نَوۡمَكُمۡ سُبَاتًا ٩ﶫ"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "وَّجَعَلۡنَا الَّيۡلَ لِبَاسًا ١٠ﶫ"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "وَّجَعَلۡنَا النَّهَارَ مَعَاشًا ١١ﶔ"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "وَبَنَيۡنَا فَوۡقَكُمۡ سَبۡعًا شِدَادًا ١٢ﶫ"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "وَّجَعَلۡنَا سِرَاجًا وَّهَّاجًا ١٣ﶫ"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "وَّاَنۡزَلۡنَا مِنَ الۡمُعۡصِرٰتِ مَآءً ثَجَّاجًا ١٤ﶫ"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "لِّنُخۡرِجَ بِهٖ حَبًّا وَّنَبَاتًا ١٥ﶫ"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "وَّجَنّٰتٍ اَلۡفَافًا ١٦ﶠ"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "اِنَّ يَوۡمَ الۡفَصۡلِ كَانَ مِيۡقَاتًا ١٧ﶫ"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "يَّوۡمَ يُنۡفَخُ فِي الصُّوۡرِ فَتَاۡتُوۡنَ اَفۡوَاجًا ١٨ﶫ"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "وَّفُتِحَتِ السَّمَآءُ فَكَانَتۡ اَبۡوَابًا ١٩ﶫ"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "وَّسُيِّرَتِ الۡجِبَالُ فَكَانَتۡ سَرَابًا ٢٠ﶠ"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "اِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَادًا ٢١ﶫ"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "لِّلطّٰغِيۡنَ مَاٰبًا ٢٢ﶫ"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "لّٰبِثِيۡنَ فِيۡهَا٘ اَحۡقَابًا ٢٣ﶔ"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "لَا يَذُوۡقُوۡنَ فِيۡهَا بَرۡدًا وَّلَا شَرَابًا ٢٤ﶫ"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "اِلَّا حَمِيۡمًا وَّغَسَّاقًا ٢٥ﶫ"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "جَزَآءً وِّفَاقًا ٢٦ﶠ"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "اِنَّهُمۡ كَانُوۡا لَا يَرۡجُوۡنَ حِسَابًا ٢٧ﶫ"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "وَّكَذَّبُوۡا بِاٰيٰتِنَا كِذَّابًا ٢٨ﶠ"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "وَكُلَّ شَيۡءٍ اَحۡصَيۡنٰهُ كِتٰبًا ٢٩ﶫ"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "فَذُوۡقُوۡا فَلَنۡ نَّزِيۡدَكُمۡ اِلَّا عَذَابًا ٣٠ﶒ"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "اِنَّ لِلۡمُتَّقِيۡنَ مَفَازًا ٣١ﶫ"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "حَدَآئِقَ وَاَعۡنَابًا ٣٢ﶫ"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "وَّكَوَاعِبَ اَتۡرَابًا ٣٣ﶫ"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "وَّكَاۡسًا دِهَاقًا ٣٤ﶠ"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "لَا يَسۡمَعُوۡنَ فِيۡهَا لَغۡوًا وَّلَا كِذّٰبًا ٣٥ﷵ"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "جَزَآءً مِّنۡ رَّبِّكَ عَطَآءً حِسَابًا ٣٦ﶫ"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "رَّبِّ السَّمٰوٰتِ وَالۡاَرۡضِ وَمَا بَيۡنَهُمَا الرَّحۡمٰنِ لَا يَمۡلِكُوۡنَ مِنۡهُ خِطَابًا ٣٧ﶔ"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "يَوۡمَ يَقُوۡمُ الرُّوۡحُ وَالۡمَلٰٓئِكَةُ صَفًّاﵬ لَّا يَتَكَلَّمُوۡنَ اِلَّا مَنۡ اَذِنَ لَهُ الرَّحۡمٰنُ وَقَالَ صَوَابًا ٣٨"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "ذٰلِكَ الۡيَوۡمُ الۡحَقُّﵐ فَمَنۡ شَآءَ اتَّخَذَ اِلٰي رَبِّهٖ مَاٰبًا ٣٩"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "اِنَّا٘ اَنۡذَرۡنٰكُمۡ عَذَابًا قَرِيۡبًاﶁ يَّوۡمَ يَنۡظُرُ الۡمَرۡءُ مَا قَدَّمَتۡ يَدٰهُ وَيَقُوۡلُ الۡكَافِرُ يٰلَيۡتَنِيۡ كُنۡتُ تُرٰبًا ٤٠ﶒ"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "وَالنّٰزِعٰتِ غَرۡقًا ١ﶫ"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "وَّالنّٰشِطٰتِ نَشۡطًا ٢ﶫ"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "وَّالسّٰبِحٰتِ سَبۡحًا ٣ﶫ"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "فَالسّٰبِقٰتِ سَبۡقًا ٤ﶫ"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "فَالۡمُدَبِّرٰتِ اَمۡرًا ٥ﶭ"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "يَوۡمَ تَرۡجُفُ الرَّاجِفَةُ ٦ﶫ"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "تَتۡبَعُهَا الرَّادِفَةُ ٧ﶠ"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "قُلُوۡبٌ يَّوۡمَئِذٍ وَّاجِفَةٌ ٨ﶫ"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "اَبۡصَارُهَا خَاشِعَةٌ ٩ﶭ"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "يَقُوۡلُوۡنَ ءَاِنَّا لَمَرۡدُوۡدُوۡنَ فِي الۡحَافِرَةِ ١٠ﶠ"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "ءَاِذَا كُنَّا عِظَامًا نَّخِرَةً ١١ﶠ"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "قَالُوۡا تِلۡكَ اِذًا كَرَّةٌ خَاسِرَةٌ ١٢ﶭ"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "فَاِنَّمَا هِيَ زَجۡرَةٌ وَّاحِدَةٌ ١٣ﶫ"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "فَاِذَا هُمۡ بِالسَّاهِرَةِ ١٤ﶠ"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "هَلۡ اَتٰىكَ حَدِيۡثُ مُوۡسٰي ١٥ﶭ"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "اِذۡ نَادٰىهُ رَبُّهٗ بِالۡوَادِ الۡمُقَدَّسِ طُوًي ١٦ﶔ"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "اِذۡهَبۡ اِلٰي فِرۡعَوۡنَ اِنَّهٗ طَغٰي ١٧ﶛ"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "فَقُلۡ هَلۡ لَّكَ اِلٰ٘ي اَنۡ تَزَكّٰي ١٨ﶫ"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "وَاَهۡدِيَكَ اِلٰي رَبِّكَ فَتَخۡشٰي ١٩ﶔ"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "فَاَرٰىهُ الۡاٰيَةَ الۡكُبۡرٰي ٢٠ﶛ"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "فَكَذَّبَ وَعَصٰي ٢١ﶛ"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "ثُمَّ اَدۡبَرَ يَسۡعٰي ٢٢ﶛ"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "فَحَشَرَﵴ فَنَادٰي ٢٣ﶛ"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "فَقَالَ اَنَا رَبُّكُمُ الۡاَعۡلٰي ٢٤ﶛ"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "فَاَخَذَهُ اللّٰهُ نَكَالَ الۡاٰخِرَةِ وَالۡاُوۡلٰي ٢٥ﶠ"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "اِنَّ فِيۡ ذٰلِكَ لَعِبۡرَةً لِّمَنۡ يَّخۡشٰي ٢٦ﶢ"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَاَنۡتُمۡ اَشَدُّ خَلۡقًا اَمِ السَّمَآءُﵧ بَنٰىهَا ٢٧ﶨ"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمۡكَهَا فَسَوّٰىهَا ٢٨ﶫ"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَاَغۡطَشَ لَيۡلَهَا وَاَخۡرَجَ ضُحٰىهَا ٢٩ﶝ"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَالۡاَرۡضَ بَعۡدَ ذٰلِكَ دَحٰىهَا ٣٠ﶠ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "اَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعٰىهَا ٣١ﶝ"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَالۡجِبَالَ اَرۡسٰىهَا ٣٢ﶫ"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَاعًا لَّكُمۡ وَ لِاَنۡعَامِكُمۡ ٣٣ﶠ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَاِذَا جَآءَتِ الطَّآمَّةُ الۡكُبۡرٰي ٣٤ﶛ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوۡمَ يَتَذَكَّرُ الۡاِنۡسَانُ مَا سَعٰي ٣٥ﶫ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ الۡجَحِيۡمُ لِمَنۡ يَّرٰي ٣٦"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَاَمَّا مَنۡ طَغٰي ٣٧ﶫ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَاٰثَرَ الۡحَيٰوةَ الدُّنۡيَا ٣٨ﶫ"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَاِنَّ الۡجَحِيۡمَ هِيَ الۡمَاۡوٰي ٣٩ﶠ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَاَمَّا مَنۡ خَافَ مَقَامَ رَبِّهٖ وَنَهَي النَّفۡسَ عَنِ الۡهَوٰي ٤٠ﶫ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَاِنَّ الۡجَنَّةَ هِيَ الۡمَاۡوٰي ٤١ﶠ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "يَسۡـَٔلُوۡنَكَ عَنِ السَّاعَةِ اَيَّانَ مُرۡسٰىهَا ٤٢ﶠ"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيۡمَ اَنۡتَ مِنۡ ذِكۡرٰىهَا ٤٣ﶠ"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "اِلٰي رَبِّكَ مُنۡتَهٰىهَا ٤٤ﶠ"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "اِنَّمَا٘ اَنۡتَ مُنۡذِرُ مَنۡ يَّخۡشٰىهَا ٤٥ﶠ"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَاَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوۡ٘ا اِلَّا عَشِيَّةً اَوۡ ضُحٰىهَا ٤٦ﶒ"
        }
    ]
}