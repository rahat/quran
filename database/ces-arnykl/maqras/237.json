{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Chválu pěj jména Pána svého NEJVYŠŠÍHO"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "jenž vše stvořil a srovnal"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "vše předurčil a vede"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "jenž vzrůsti dává pastvinám"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "a mění je pak v stébla vyschlá"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Naučíme tě čísti (Korán) a nezapomeneš"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "leda co Bůh by chtěl: Bůh zajisté zná věci skryté i veřejné"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "a usnadníme ti cestu k snadnému"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Pročež napomínej, neb napomenutí tvé jest prospěšné"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Pamětliv bude ho ten, kdo (Boha) bojí se"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "a straniti bude se ho jen ten nejbídnější"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "jenž péci se bude v ohni mohutném"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "v něm pak nezemře, aniž bude žíti"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Však dobře povede se očištěnému"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "jenž pomní jména Pána svého i modlí se"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Nicméně radši máte život pozemský"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "ač budoucí lepší jest a stálejší"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "To vše jest v listech (knih) předešlých"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "v listech (knih) Abrahama i Mojžíše"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Zdaž došla tě zpráva o (dnu) ZAHALUJÍCÍM"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "V den ten líce budou pokorná"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "upracována, znavena"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "páliti budou se v ohni horoucím"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "píti budou z pramene vřelého"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Nebudou pokrmu míti, vyjma trnitého bodláčí"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "jež nevykrmí (je) aniž ukojí (jich) hlad"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "V den ten líce (též) budou veselá"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "se snahou svou spokojená"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "v zahradách vysokých"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "v ní neslyšán bude hovor zlý"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "v ní prameny budou zurčící"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "pohovky vyvýšené"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "a číše připravené"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "polštáře urovnané"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "koberce rozprostřené"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Zdaž nepatří na velblouda, jak (moudře) stvořen byl"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "a na nebesa, jak byla zdvižena"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "a na pohoří jak byla vztyčena"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "a na zemi, jak byla prostřena"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Napomínej tedy, neb tys jen napominatel"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "nemáš nad nimi práva (plného)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "vyjma toho, jenž odvrací se a nevěří"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "toho pak ztresce Bůh největším ztrestáním"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Zajistéť k nám jich návrat (povede)"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "pak zajisté na nás bude súčtování s nimi"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Při JITŘENCE"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "a nocích deseti"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "při dvojitém a jednoduchém"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "a při noci, když ubíhá"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Zdaž není v tomto přísaha pro muže rozumného"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Což neviděl‘s, jak naložil Pán tvůj s (kmenem) ‘Ád"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "v Iramu, plném sloupoví"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "jemuž rovného nebylo vytvořeno v (této) zemi"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "A s (kmenem) Tsemúd, jenž tesal si (domy) ve skále v údolí"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "A s Faraonem, jenž na kůl narážel"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Všichni svévoli v zemi páchali"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "a pohoršení (jen) v ní množili"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "I snesl na ně Pán tvůj trestu bič"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "neb Pán tvůj stále na číhané jest"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "A pokud se týče člověka, kdykoli zkouší jej Pán jeho tím, že ctí zahrnuje jej a milostí, říká: „Poctil mne Pán můj.“"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "A když zkouší jej tím, že odměřuje mu dary své, říká: „Pohanil mne Pán můj!“"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Nikoliv! Ale vy nectíte sirotka"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "aniž vybízíte se navzájem k dávání krmě nuznému"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "a hltáte dědictví (slabých) dravým hltáním"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "a milujete bohatství láskou přílišnou"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ale ne: když země roztlučena bude ranou za ranou"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "a přijde Pán tvůj i andělé, v šiku za šikem"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "a předvedeno bude v den ten peklo: - v den ten rozvažovati bude člověk! Však co plátno bude mu pak rozvažování"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Řekne pak: „Kéž byl bych pro svůj (nynější) život (dobré skutky) předeslal!“"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "V den onen pak nikdo takovým trestem neztresce"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "aniž kdo do takových spoutá pout"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ó duše uklidněná"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "navratiž se k Pánu svému,uspokojená, uspokojující —"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "vstupiž pak mezi služebníky mé"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "a vstup do (zahrad) ráje mého"
        }
    ]
}