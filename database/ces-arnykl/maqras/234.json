{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "ZACHMUŘIL SE a odvrátil"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "že slepec k němu přišel"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "však co mohlo ti říci, že by snad se nepolepšil"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "aneb napomenutí, tak aby prospělo mu, si nerozvážil"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Pokud se týče bohatce"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "k němu pozorně ses choval"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "a nehledíš na to, že se nepolepšil"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Však pokud se týče toho, jenž přichází k tobě s úsilím"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "a (Boha) bojí se"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "jej zanedbáváš"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Ne tak! Korán zajisté jest připomínkou"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "a kdožkoli chce, nechť si jej připomíná —"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(psaný) na listech převzácných"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "vznešených, přečistých"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "rukama písařů"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "převzácných, bez viny"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Zabit budiž člověk! Jak zatvrzelý jest"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Z čeho že Bůh jej stvořil"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Z kapky (semene) dle (určeného) rozměru ho stvořil"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "pak cestu mu usnadnil"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "pak zemřít dá mu i pohřbí ho"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "pak, když chtíti bude, vzkřísí ho"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Však ne - on dosud nesplnil, co Bůh mu byl nakázal"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Nechť jen pohlédne na pokrm svůj"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "my zajisté vodu v proudech dštíme mu"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "pak zemi pukat dáváme v puklinách"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "i vzrůsti dáváme v ní obilí"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "a révě též a jeteli"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "a olivovníku a datlovníku"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "a zahradám hustě porostlým"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "a ovoci a travinám"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "k užitku vám a dobytčatům vašim"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Ale když přijde děsný (trouby) vřesk"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "v den, kdy člověk bude prchati před bratrem svým"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "a matkou svou, a otcem svým"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "a ženou svou a dětmi svými"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "(v den ten) každý člověk bude sám (s sebou) míti práce dosti"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "V den ten budou tváře zářící"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "smějící se, radující se"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "a budou v den onen tváře prachem pokryté —"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "halit je bude černota"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "toť budou nevěrci, ti zavilí"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Když slunce bude SLOŽENO"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "a hvězdy budou padati"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "a pohoří se hýbati"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "a velbloudice budou opuštěny"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "a divá zvěř bude shromážděna"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "a moře budou varem vřít"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "a duše (ke svým tělům) budou pojeny"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "a (dcerka) za živa zahrabaná bude tázána"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "pro jakou vinu byla zabita"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "když listy (knih) budou rozbaleny"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "a nebesa stranou stažena"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "a pekla plamen rozdmýchán"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "zahrada ráje pak přiblížena"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "tu (každá) duše zví, co vykonala"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Aniž přisáhnout (nutno mi) při hvězdách zpátečných"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "jež běží rychle a skrývají se"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "aniž při noci, když temno nadchází"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "anebo jitru, když dechu nabírá —"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "že (Korán) jest rčením, jež pronesl posel vzácný"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "mocný před Pánem trůnu, pevný"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "jenž poslouchán jest a věrný"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Neníť soudruh váš Džinny posedlý"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "nýbrž viděl jej na obzoru jasném"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "aniž pro sebe chce podržeti věci skryté"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "aniž slova opakuje, jež vyřkl Satan kamenovaný"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Kam tedy odcházíte"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "(Korán) jest pouze Napomenutím veškerenstvu"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "těm z vás, kdož přímou chtějí stezkou jít"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "však nebudete toho chtít, leda by Bůh chtěl tomu, Pán světů veškerých"
        }
    ]
}