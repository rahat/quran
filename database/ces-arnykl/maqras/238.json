{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Přisahati mi netřeba při této KONČINĚ"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "neb ty přece bydlíš v této končině —"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "ni při otci a tom; co zplozuje"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Vždyť člověka my stvořili jsme v soužení"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "což za to má, že přemoci jej nikdo není s to"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Říká: „Ztrávil jsem statky převelké.“"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Což za to má, že nikdo jej neviděl"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Což nedali jsme mu očí dvé"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "a jazyk (též), i retů dvé"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "A neuvedli jej na silnic dvé"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "A přece ještě nepodjal se (vzestupu po) svahu"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "A co poví ti, co jest (vzestup po) svahu"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Toť výkup zajatců"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "neb jídla dávání v den hladový"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "sirotkovi, blízkému příbuznému"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "neb chuďasovi v prachu úpícímu"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "a pak býti z těch, kdož uvěřili a navzájem povzbuzují se k trpělivosti a navzájem povzbuzují se k soucitu"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "Tito budou státi po pravici"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "a ti, kdož neuvěřili ve znamení naše, státi budou po levici"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "oheň (jak klenba) je obklopí"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Při SLUNCI a polední záři jeho"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "a při měsíci, když je následuje"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "a při dnu, když je odhaluje"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "a při noci, když je zahaluje"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "při nebi a tom, jenž zbudoval je"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "a při zemi a tom, jenž rozprostřel ji"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "při duši a tom, jenž urovnal ji"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "a hříšnost i bohabojnost vnukl jí"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "dobře povede se tomu, jenž čistou udržuje si ji"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "a ztroskotá ten, jenž kazí si ji"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "(Kmen) Tsemúd lhářem nazval (proroka) ve svévoli své"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "když nejbídnější vyvstal z nich"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "tu řekl prorok boží jim: „Velbloudice boží to; nechte ji píti!“"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Však lhářem nazvali jej a žíly podřízli jí; i zahladil je Pán jejich za jejich vinu, rovným způsobem"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "aniž se bojí (toho) následků"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Při NOCI, když (temnem) halí"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "a při dnu, když závoj odhalí"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "a při tom, jenž stvořil mužské a ženské (pohlaví)"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "zajisté snaha vaše se různí"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Pročež, pokud se týče toho, jenž dává (almužnu) a (Boha) se bojí"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "a víru dává tomu nejkraššímu"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "tomu usnadníme cestu k snadnému"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Ale pokud se týče lakomce soběstačného"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "jenž lží zove to nejkrašší"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "tomu usnadníme cestu k obtížnému"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "a co prospějí mu statky jeho, když (v peklo) vržen bude"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Zajisté na nás jest (správné) vedení"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "neb zajisté nám přináleží moc nad životem budoucím i pozemským"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Pročež varuji vás před ohněm planoucím"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "v němž bude péci se jen ten nejbídnější"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "ten, jenž zval (to vše) lží a odvracel se"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "však vzdálen od něho bude bohabojný"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "jenž rozdává ze jmění svého, aby čistším stal se"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "a nečiní nikomu dobrodiní proto, aby byl odměněn"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "nýbrž jen z touhy po tváři Pána svého nejvyššího"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "A zajisté, že bude spokojen"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Při ZÁŘI POLEDNÍ"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "a noci, když se temní"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Neopustil tě Pán tvůj, aniž tě nenávidí"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "zajisté pak život budoucí lepším bude pro tebe života pozemského"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "zajisté obdaří té Pán tvůj a budeš spokojen"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "Což neshledal tě sirotkem a dal ti útulek"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "A shledal tě zbloudilým a uvedl tě (na cestu pravou)"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "a shledal tě potřebným a obohatil tě"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "Pročež, pokud se týče sirotka. neubližuj mu"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "a pokud se týče prosícího, neodháněj ho"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "a pokud se týče dobrodiní Pána tvého, hovoř o něm"
        }
    ]
}