{
    "rukus": [
        {
            "chapter": 85,
            "verse": 1,
            "text": "Při nebi, plném SOUHVĚZDÍ"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "a při dnu slíbeném"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "a při svědku a dosvědčeném"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "(přisám:) nechť zhynou vládci zákopu"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "ohně, jenž (stále) živen, plál"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "když kolem něho seděli"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "aby sami svědky byli toho, co s věřícími dělali"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "A mstili se jim tak jen proto, že v Boha, Mocného, Chvályhodného věřili"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "jemuž přináleží panství nebes i země; a Bůh všech věcí svědkem jest"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Zajisté pak těm, kdož na tuto zkoušku postavili věřící muže a ženy a pak nekáli se, (schystán) jest trest pekla a trest sžíhání"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Však zajisté těm, kdož uvěřili a konali dobré skutky, (schystány) jsou zahrady, pod nimiž řeky tekou; toť blaho bude veliké"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Zajisté udeření Pána tvého přísné bude"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "zajisté onť jest to, jenž (všemu) dává vznik a k sobě dává navraceti"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "onť velkým v odpouštění jest a láskyplný"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Pán trůnu vznešeného"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Konatel toho, co chce"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Zdaž došla tě zpráva: o vojích"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Faraona a (lidu) Tsemúd"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Však nevěřící to zovou lží —"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "co Bůh ze zadu jich je obklopuje"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Však toto jest Korán vznešený"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "(zapsaný) na desce uschované"
        }
    ]
}