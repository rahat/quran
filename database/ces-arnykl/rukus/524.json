{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Když nebesa se ROZPOLTÍ"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "a hvězdy budou rozprášeny"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "a moře splynou do sebe"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "a hroby zdola navrch budou převráceny"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(tehdy) zví duše, co byla učinila, i co byla zameškala"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ó člověče! co zmámilo tě ohledně Pána tvého vzácného"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "jenž stvořil tě a vyrovnal a správnou (podobu) ti dal"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "v jakékoliv pak podobě chtěl, tě sestavil"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Nikoliv! naopak, vylhaným nazývají soud (poslední)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Však zajisté nad vámi strážci stojí"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "vzácní, (vše) píšící"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "co konáte (dobře) vědí"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Ctnostní v rozkošném budou (bydlení)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "zavilí pak v pekla plameni"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "péci budou se v den soudu (poslední)"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "z něj nebudou se moci vzdáliti"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Kdo poví ti, co jest den soudu (poslední)"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "A znovu: kdo poví ti, co jest den soudu (poslední)"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Den, kdy, nebude duše moci učiniti pro jinou duši praničeho: rozhodnutí v den ten patřiti bude Bohu"
        }
    ]
}