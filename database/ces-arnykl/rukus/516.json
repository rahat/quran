{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Při pořadem POSLANÝCH"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "a spěchem spějících"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "a hodem rozhazujících, a předělem rozlišujících"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "a napomenutí vrhajících"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "omluv či výstrahy"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "(přisám:) zajisté to, co slibováno jest vám, jistě udá se"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Když pak hvězdy budou zhasnuty"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "a nebesa budou rozpoltěna"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "a když hory budou rozprášeny"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "a čas jistý určen pude prorokům —"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "ke kterému dni (určena) bude lhůta"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Ke dni to rozhodnutí"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "A kdo poví ti, co den jest rozhodnutí"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Což nezahladili jsme předešlé"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "pak (jiným) dali po nich následovati"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Taktéž učiníme i s provinilými"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Což nestvořili jsme vás z vody prabídné"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "již vložili jsme v místo bezpečné"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "až k době předem určené"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "A mohli jsme to"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Jak mocní jsme"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Což neučinili jsme zemi schránou jen"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "živým i mrtvým"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "A na ní učinili jsme hor temena vysoká, a pitím vodu čerstvou dali vám"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Táhněte k tomu, co lží jste nazvali"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Táhněte k stínu trosloupovému"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "jenž nestíní, aniž chrání proti plamenům"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "jiskry metá, jak hrady veliké"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "podobné velbloudům žlutavým"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Toto jest den, kdy ani nehlesnou"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "aniž dovoleno bude jim, by omlouvali se"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Běda v den onen těm, kdož zvou to lží"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Totoť den rozhodnutí jest: shromáždili jsme vás i předešlé"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "máte-li pak lest nějakou, nuž kujte ji proti mně"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Běda v den onen těm, kdož zvou to lží"
        }
    ]
}