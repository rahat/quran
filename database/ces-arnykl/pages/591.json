{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Při nebi a HVĚZDĚ NOČNÍ"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "A co poví ti, co jest hvězda noční"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Hvězda pronikavě (zářivá)"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Zajisté každá duše nad sebou strážce má"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Nechť pohlédne jen člověk na to, z čeho stvořen byl"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Stvořen byl z vody vystřiklé"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "z prostřed ledví a kostí hrudních vyšlé"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Pročež jistě (Bůh) moc má; by vrátil jej (k životu)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "v den, kdy zkoumána budou tajemství"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "a kdy síly míti (člověk) nebude, aniž pomocníka"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Při nebi, jež se otáčí"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "při zemi, jež se rozpukává"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "(přísám, že Korán) zajisté jest slovo rozhodné"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "není Jen žertem (míněno)"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Oni pak kují léčky své —"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "a já též kuji léčky své"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Pomalu jednej s nevěrci: poshov jim (ještě) chvilenku"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Chválu pěj jména Pána svého NEJVYŠŠÍHO"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "jenž vše stvořil a srovnal"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "vše předurčil a vede"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "jenž vzrůsti dává pastvinám"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "a mění je pak v stébla vyschlá"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Naučíme tě čísti (Korán) a nezapomeneš"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "leda co Bůh by chtěl: Bůh zajisté zná věci skryté i veřejné"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "a usnadníme ti cestu k snadnému"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Pročež napomínej, neb napomenutí tvé jest prospěšné"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Pamětliv bude ho ten, kdo (Boha) bojí se"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "a straniti bude se ho jen ten nejbídnější"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "jenž péci se bude v ohni mohutném"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "v něm pak nezemře, aniž bude žíti"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Však dobře povede se očištěnému"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "jenž pomní jména Pána svého i modlí se"
        }
    ]
}