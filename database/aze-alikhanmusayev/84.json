{
    "chapter": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Göy yarılacağı"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "və Rəbbini dinləyib boyun əyməyə hazır olacağı zaman"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer dümdüz ediləcəyi"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "içindəkiləri kənara atıb boşalacağı"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "və Rəbbini dinləyib boyun əyməyə hazır olacağı zaman"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan! Sən, həqiqətən də, səy göstərib Rəbbinə tərəf can atırsan. Sən Onunla qarşılaşacaqsan"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağ əlinə veriləcəksə"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "o, yüngül sorğu-suala tutulacaq"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "və sevincək öz ailəsinə qayıdacaqdır"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Kimin kitabı arxa tərəfindən veriləcəksə"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "o özünə ölüm diləyəcək"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "və alovlu oda atılacaqdır"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Sözsüz ki, o, dünyada ikən öz ailəsində sevinc içində idi"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "və elə güman edirdi ki, Rəbbinin hüzuruna qayıtmayacaqdır"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Xeyr! Sözsüz ki, Rəbbi onu görürdü"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "And içirəm şəfəqə"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "gecəyə və onun ağuşuna aldıqlarına"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "bədirlənmiş on dörd gecəlik aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Siz mütləq haldan-hala keçib dəyişəcəksiniz"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Onlara nə olub ki, iman gətirmirlər"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "və onlara Quran oxunduqda səcdə etmirlər"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Əksinə, küfr edənlər haqqı yalan sayırlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Allah onların nəyi gizlətdiklərini çox yaxşı bilir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Elə isə onları ağrılı-acılı bir əzabla müjdələ"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "iman gətirib yaxşı işlər görənlər istisna olmaqla! Onlar üçün tükənməz mükafatlar hazırlanmışdır"
        }
    ]
}