{
    "chapter": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Ey libasına bürünüb örtünmüş peyğəmbər"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Qalx və insanları xəbərdar et"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Təkcə Rəbbini uca tut"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Geyimini təmiz saxla"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Pis şeyləri tərk et"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Yaxşılığı təmənna məqsədilə etmə"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Rəbbin üçün səbir et"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Sur üfürülərkən –"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Çətin bir gün olacaq"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Həmin gün kafirlərə asan olmayacaqdır"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Məni yaratdığım kimsə ilə tək burax"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Mən ona bolluca var-dövlət bağışladım"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "qayğısına qalan oğullar verdim"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "və onu hər cür imkanlarla təmin etdim"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Bunlara baxmayaraq, o, yenə də əlavə etməyimi arzulayır"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Xeyr! Çünki o, ayələrimizi inadla inkar edir"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Mən onu sərt bir yoxuşa sürükləyəcəyəm"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Çünki o, fikirləşərək qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona ölüm olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona ölüm olsun! Gör nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Üz-gözünü turşudub qaşqabağını tökdü"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını çevirib təkəbbür göstərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbazlardan eşidilib təkrarlanan sehrdən başqa bir şey deyildir"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə salacağam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sağ-salamat buraxmaz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun üzərində on doqquz gözətçi mələk vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gözətçilərini yalnız mələklərdən etdik və onların sayını on doqquz etdik ki, bu, kafirlər üçün ancaq bir sınaq olsun, özlərinə Kitab verilənlər yəqinlik hasil etsinlər, iman gətirənlərin imanı artsın, Kitab verilənlər və möminlər haqqa şübhə etməsinlər və qəlblərində xəstəlik olanlar və kafirlər: “Allah bu məsəllə nə demək istəyir?”– desinlər. Allah istədiyi kimsəni belə azdırır, istədiyini də doğru yola yönəldir. Sənin Rəbbinin qoşunları barədə yalnız Özü bilir. Bu, bəşəriyyət üçün ancaq bir xatırlatmadır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun dönüb uzaqlaşan gecəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun ağarmaqda olan sübh çağına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Doğrudan da o Cəhənnəm ən böyük fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəşəriyyət üçün xəbərdarlıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxşı işlər görüb irəli çıxmaq və ya günah edib geriyə düşmək istəyənlər üçün"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazandığının girovuna çevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sağ tərəf sahiblərindən başqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar Cənnət bağlarında bir-birlərindən soruşacaqlar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "günahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qılanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməzdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sözlər danışanlarla birlikdə biz də danışardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gününü yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "ölüm yəqinliyi bizə gələnə qədər”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Odur ki, şəfaət edənlərin şəfaəti onlara fayda verməz"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Onlara nə olub ki, nəsihətdən üz döndərirlər"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Sanki ürküdülmüş vəhşi uzunqulaqlardır ki"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "ovçulardan (yaxud aslandan) qaçırlar"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Əksinə, onlardan hər biri vəhy olunmuş səhifələrin məhz ona verilməsini istəyir"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Xeyr! Əksinə, onlar Axirətdən qorxmurlar"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Xeyr! Bu Quran bir nəsihətdir"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "İstəyən onu xatırlayar"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "Bilin ki, Allah istəmədikcə onlar xatırlaya bilməzlər. Mütləq qüdrətindən qorxub çəkinməyə layiq olan da, bağışlamağa qadir olan da Odur"
        }
    ]
}