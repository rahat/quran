{
    "chapter": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Ən Uca Rəbbinin adına təriflər de"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O Rəbbin ki, hər şeyi yaradıb kamilləşdirdi"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O Rəbbin ki, hər şeyin müqəddəratını əzəldən müəyyən edərək yol göstərdi"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O Rəbbin ki, otlağı cücərtdi"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "sonra da qaralmış samana çevirdi"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Biz sənə Quranı elə oxumaq imkanı verəcəyik ki, o, yadından çıxmayacaq"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Əlbəttə, Allahın istədiyindən başqa. Həqiqətən, O, aşkardakından da, gizli qalandan da xəbərdardır"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Səni ən asan olana müvəffəq edərik"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Xatırlatmanın fayda verdiyini görsən, onlara xatırlat"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allahdan qorxanlar öyüd-nəsihət götürərlər"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Ən bədbəxt kimsələr isə onu qulaqardına vurarlar"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O kimsə ki, Cəhənnəmə atılacaq"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O orada nə öləcək, nə də yaşaya biləcəkdir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Günahlardan təmizlənən kimsə isə uğur qazanmışdır"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "O kimsə ki, Rəbbinin adını xatırlayıb namaz qılmışdır"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Xeyr, siz dünya həyatını olduqca üstün tutursunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Axirət isə daha xeyirli və daha sürəklidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Həqiqətən də bu, əvvəlki səhifələrdə bildirilmişdir –"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahimin və Musanın səhifələrində"
        }
    ]
}