{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Göy parçalanacağı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "ulduzlar səpələnəcəyi zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "dənizlər daşıb bir-birinə qarışacağı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "qəbirlər çevriləcəyi zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "hər kəs əvvəlcədən özü üçün nəyi tədarük edib, nəyi sonraya saxladığını biləcəkdir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan! Səni öz Səxavətli Rəbbinə qarşı qoyan nədir"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki, səni yaradıb kamilləşdirdi və sənə gözəl bir surət verdi"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Səni istədiyi şəklə saldı"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Xeyr! Əksinə, siz Qiyaməti yalan hesab edirsiniz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Həqiqətən, sizin üstünüzdə nəzarətçilər vardır –"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "çox möhtərəm, əməllərinizi yazanlar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Onlar sizin nə etdiklərinizi bilirlər"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Həqiqətən, itaətkarlar nemət içində olacaqlar"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Şübhəsiz ki, günahkarlar da Cəhənnəmdə olacaqlar"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Onlar ora Haqq-hesab günü girəcəklər"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Onlar əsla ondan yayına bilməyəcəklər"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Sən haradan biləydin ki, Haqq-hesab günü nədir"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Doğrudan da, sən haradan biləydin ki, Haqq-hesab günü nədir"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O gün heç kəs heç kəsə fayda verə bilməz və həmin gün hakimiyyət Allaha məxsus olacaqdır"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Çəkidə və ölçüdə aldadanların vay halına"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "O kəslərin ki, camaatdan bir şey aldıqda onu tam almaq istəyərlər"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "onlar üçün bir şey ölçdükdə və ya çəkdikdə onu ziyana salarlar"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Onlar dirildiləcəklərini fikirləşmirlərmi"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Həm də əzəmətli bir gündə"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "O gündə ki, insanlar aləmlərin Rəbbinin qarşısında dayanacaqlar"
        }
    ]
}