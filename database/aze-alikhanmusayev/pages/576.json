{
    "pages": [
        {
            "chapter": 74,
            "verse": 18,
            "text": "Çünki o, fikirləşərək qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Ona ölüm olsun! Necə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Sonra yenə ona ölüm olsun! Gör nə qərara gəldi"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Sonra o nəzər saldı"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Üz-gözünü turşudub qaşqabağını tökdü"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Sonra da arxasını çevirib təkəbbür göstərdi"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "və dedi: “Bu, sehrbazlardan eşidilib təkrarlanan sehrdən başqa bir şey deyildir"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "Bu, adi insan kəlamıdır"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Mən onu Səqərə salacağam"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Sən haradan biləsən ki, Səqər nədir"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "O, kimsəni sağ-salamat buraxmaz"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "dərini yandırıb-yaxar"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Onun üzərində on doqquz gözətçi mələk vardır"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Biz Cəhənnəm gözətçilərini yalnız mələklərdən etdik və onların sayını on doqquz etdik ki, bu, kafirlər üçün ancaq bir sınaq olsun, özlərinə Kitab verilənlər yəqinlik hasil etsinlər, iman gətirənlərin imanı artsın, Kitab verilənlər və möminlər haqqa şübhə etməsinlər və qəlblərində xəstəlik olanlar və kafirlər: “Allah bu məsəllə nə demək istəyir?”– desinlər. Allah istədiyi kimsəni belə azdırır, istədiyini də doğru yola yönəldir. Sənin Rəbbinin qoşunları barədə yalnız Özü bilir. Bu, bəşəriyyət üçün ancaq bir xatırlatmadır"
        },
        {
            "chapter": 74,
            "verse": 32,
            "text": "Xeyr! And olsun aya"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "And olsun dönüb uzaqlaşan gecəyə"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "And olsun ağarmaqda olan sübh çağına"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "Doğrudan da o Cəhənnəm ən böyük fəlakətdir"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "həm bəşəriyyət üçün xəbərdarlıqdır"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "həm də sizlərdən yaxşı işlər görüb irəli çıxmaq və ya günah edib geriyə düşmək istəyənlər üçün"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Hər bir kəs qazandığının girovuna çevrilir"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "sağ tərəf sahiblərindən başqa"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "Onlar Cənnət bağlarında bir-birlərindən soruşacaqlar –"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "günahkarlar barəsində"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "Sizi Səqərə salan nədir"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "Onlar deyəcəklər: “Biz namaz qılanlardan deyildik"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "Kasıbı da yedizdirməzdik"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "Batil sözlər danışanlarla birlikdə biz də danışardıq"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "və Haqq-hesab gününü yalan hesab edərdik –"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "ölüm yəqinliyi bizə gələnə qədər”"
        }
    ]
}