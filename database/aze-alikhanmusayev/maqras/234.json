{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "O qaşqabağını sallayıb üzünü yana çevirdi –"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "yanına bir korun gəlməsinə görə"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Nə bilirdin ki, bəlkə o günahlardan təmizlənəcəkdi"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "və yaxud nəsihət dinləyib faydalanacaqdı"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Nəsihətə ehtiyacı olmayana gəlincə isə –"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "sən ona diqqət yetirirsən"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Onun təmizlənməməyinin sənə bir dəxli yoxdur"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Səy göstərib sənin yanına gələn"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Allahdan qorxan kimsəyə gəlincə"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "ona məhəl qoymursan"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Xeyr! Şübhəsiz ki, bu, bir nəsihətdir"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Kim istəsə, qoy onu xatırlayıb ibrət alsın"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "Bu Quran kəramətli səhifələrdədir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "yüksək və pak səhifələrdədir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Bu səhifələr elçilərin əllərində –"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "möhtərəm və müti olanların əllərindədir"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Qoy ölsün kafir insan! O necə də nankordur"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Qoy baxıb görsün Allah onu nədən yaradıb"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Allah onu nütfədən yaratdı və müəyyən şəkildə formalaşdırdı"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra da onun yolunu asanlaşdırdı"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra onu öldürüb qəbirə yerləşdirdi"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "İstədiyi bir zaman onu dirildəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Xeyr! O, hələ də Allahın ona buyurduğunu yerinə yetirməmişdir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Qoy insan yediyinə diqqət yetirsin bir az"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Həqiqətən, yağışı bol-bol Biz yağdırırıq"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra da yeri çat-çat yarıb"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "orada taxıl yetişdiririk"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Habelə üzüm və yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "zeytun və xurma ağacları"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "sıx-sıx bağlar"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "meyvələr və otlar da bitiririk"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Bu nemətlər sizin istifadəniz və mal-qaranızın faydalanması üçündür"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "Qulaqbatırıcı bir səs gələndə –"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "o gün insan qaçacaq öz qardaşından"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "anasından, atasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "arvadından və övladlarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün onlardan hər birinin yetərincə işi olacaqdır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün neçə-neçə üzlər parlayacaq"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "güləcək və fərəhlənəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gün neçə-neçə üzlərə toz-torpaq hopacaq"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "onları zülmət bürüyəcəkdir"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "Məhz onlar kafirlər, günahkarlardır"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Günəş sarınacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "ulduzlar soluxub sönəcəyi zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "dağlar hərəkətə gətiriləcəyi zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "boğaz dəvələr başlı-başına qalacaqları zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "vəhşi heyvanlar bir yerə toplanılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "dənizlər alovlanacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "hər kəs öz tayına qovuşdurulacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "diri-diri torpağa basdırılmış qız uşağı soruşulacağı zaman –"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "hansı günaha görə öldürülmüşdür"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "səhifələr açılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "göy qopardılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cəhənnəm alovlandırılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "və Cənnət möminlərə yaxınlaşdırılacağı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "hər kəs bu gün üçün özünə nə tədarük etdiyini biləcəkdir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "And içirəm gecə çıxıb gündüz batan ulduzlara"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "seyrə çıxıb gizlənən səyyarələrə"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "qaralmaqda olan gecəyə"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "və açılmaqda olan səhərə"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Həqiqətən, bu, möhtərəm Elçimizin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "O elçi ki, qüvvətlidir, Ərşin sahibi yanında böyük hörmət sahibidir"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "orada itaət ediləndir, etibarlıdır"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin dostunuz Muhəmməd divanə deyildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "O, Cəbraili aydın üfüqdə gördü"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "O, qeybdən də xəsislik edən deyildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu Quran daşqalaq olunmuş şeytanın sözü də deyildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Elə isə ondan üz döndərib hara gedirsiniz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Bu, aləmlərə yalnız bir nəsihətdir –"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "sizlərdən doğru yolda olmaq istəyənlər üçün"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Aləmlərin Rəbbi Allah istəməyincə, siz istəyə bilməzsiniz"
        }
    ]
}