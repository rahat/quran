{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaradan Rəbbinin adı ilə oxu"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O, insanı qan laxtasından yaratdı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oxu! Sənin Rəbbin müqayisəsiz səxavətə malikdir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "O, qələmlə yazmağı öyrətdi"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmədiklərini öyrətdi"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Xeyr! İnsan, doğrudan da, həddini aşır –"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "özünün ehtiyacsız olduğunu zənn etdiyinə görə"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Axı son dönüşün Rəbbinədir"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Gördünmü o kəsi ki, mane olur –"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "bir bəndəyə namaz qıldığı zaman"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Söylə görək, əgər o bəndə doğru yoldadırsa"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "yaxud Allahdan qorxmağı əmr edirsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Söylə görək, əgər o kafir haqqı yalan sayıb üz döndəribsə, onda necə olsun"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Məgər o bilmir ki, Allah görür"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Xeyr! Əgər yaramaz əməlinə son qoymasa, Biz onun kəkilindən tutacağıq –"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "yalançı, günahkar kəkilindən"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Qoy öz yığnağını çağırsın"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz də əzab mələklərini çağıracağıq"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Xeyr, sən ona qulaq asma! Səcdə qıl və Allaha yaxınlaş"
        }
    ]
}