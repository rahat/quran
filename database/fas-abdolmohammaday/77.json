{
    "chapter": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "سوگند به بادهايى كه از پى هم مى‌آيند،"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "و سوگند به بادهاى سخت‌وزنده،"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "و سوگند به بادهاى باران‌آور،"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "و سوگند به آنها كه حق را از باطل جدا مى‌كنند،"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "و سوگند به آنها كه ياد خدا را مى آموزند"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "تمام‌كردن حجت را، يا بيم‌كردن را،"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "كه آنچه به شما وعده داده شود واقع خواهد شد"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "پس آنگاه كه ستارگان خاموش شوند،"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "و آنگاه كه آسمان بشكافد،"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "و آنگاه كه كوه‌ها پراكنده گردند،"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "و آنگاه كه پيامبران را وقتى معين شود"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "براى چه روزى معين شود؟"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "براى روز فصل"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "و چه دانى كه روز فصل چيست؟"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "آيا اوّليان را هلاك نكرده‌ايم"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "و آخريان را نيز از پى آنها نمى بريم؟"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "با مجرمان چنين رفتار مى‌كنيم"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "آيا شما را از آبى پست و بى‌مقدار نيافريده‌ايم"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "و آن را در جايگاهى استوار قرار نداديم،"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "تا زمانى معين؟"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "پس ما توانا بوديم و نيك توانا بوديم"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "آيا زمين را جايگاهى نساختيم،"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "براى زندگان و مردگان؟"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "در آن كوه‌هاى بلند پديد آورديم و از آبى گوارا سيرابتان ساختيم"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "به سوى آنچه دروغش مى‌شمرديد به راه افتيد"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "به سوى آن دود سه شعبه به راه افتيد،"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "كه نه از آسيبتان نگه دارد و نه دفع آن شعله كند"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "و جهنم شراره‌هايى مى‌افكند هر يك به بلندى كاخى عظيم،"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "گويى كه اُشترانى زردگونند"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "در آن روز واى بر تكذيب‌كنندگان،"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "اين روزى است كه كس سخن نگويد"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "آنها را رخصت ندهند تا پوزش خواهند"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "اين روز روز فصل است كه شما و پيشينيانتان را گرد مى‌زوريم"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "پس اگر حيلتى داريد به كار بريد"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "پرهيزگاران در سايه‌ها و كنار چشمه سارانند،"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "با هر ميوه‌اى كه آرزو كنند"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "به پاداش كارهايى كه مى‌كرده‌ايد بخوريد و بياشاميد، شما را گوارا باد"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "ما نيكوكاران را اينچنين پاداش مى‌دهيم"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "بخوريد و اندك بهره‌اى برگيريد، كه شما مجرمانيد"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "و چون گويندشان كه ركوع كنيد، ركوع نمى‌كنند،"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "پس از قرآن به كدام سخن ايمان مى‌آورند؟"
        }
    ]
}