{
    "maqras": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "آنگاه كه آسمان بشكافد،"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "و آنگاه كه ستارگان پراكنده شوند،"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "و آنگاه كه درياها به هم بپيوندند،"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "و آنگاه كه قبرها زير و زبر گردند،"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "هر كس مى‌داند چه چيز پيشاپيش فرستاده و چه چيز بر جاى گذاشته است"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "اى آدمى، چه چيز تو را به پروردگار كريمت مغرور كرده است؟"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "آن كه تو را بيافريد و اعضايت تمام كرد و اعتدالت بخشيد"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "و به هر صورتى كه خواست اعضاى تو را به هم انداخت"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "آگاه باشيد كه شما روز جزا را دروغ مى‌انگاريد"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "حال آنكه بر شما محافظانى گمارده شده‌اند"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "كاتبانى بزرگوار،"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "مى‌دانند كه شما چه مى‌كنيد"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "هر آينه نيكوكاران در نعمتند،"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "و گناهكاران در جهنم"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "در روز شمار به جهنم درآيند،"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "و از آن غايب نشوند"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "تو چه مى‌دانى كه روز شمار چيست؟"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "باز هم تو چه مى‌دانى كه روز شمار چيست؟"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "روزى است كه كسى براى كسى ديگر هيچ كارى نتواند كرد و در آن روز فرمان فرمان خدا باشد"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "واى بر كم‌فروشان"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "آنان كه چون از مردم كيل مى‌ستانند آن را پُر مى‌كنند؛"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "و چون براى مردم مى‌پيمايند يا مى‌كشند از آن مى‌كاهند"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "آيا اينان نمى‌دانند كه زنده مى‌شوند"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "در آن روز بزرگ؟"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "روزى كه مردم به پيشگاه پروردگار جهانيان مى‌ايستند"
        },
        {
            "chapter": 83,
            "verse": 7,
            "text": "آگاه باشيد كه اعمال بدكاران مكتوب در سِجّين است"
        },
        {
            "chapter": 83,
            "verse": 8,
            "text": "تو چه مى‌دانى كه سجين چيست؟"
        },
        {
            "chapter": 83,
            "verse": 9,
            "text": "كتابى است نوشته"
        },
        {
            "chapter": 83,
            "verse": 10,
            "text": "در آن روز واى بر تكذيب‌كنندگان"
        },
        {
            "chapter": 83,
            "verse": 11,
            "text": "آنان كه روز جزا را دروغ انگاشتند"
        },
        {
            "chapter": 83,
            "verse": 12,
            "text": "و آن روز را جز متجاوزى گناهكار دروغ نينگارد"
        },
        {
            "chapter": 83,
            "verse": 13,
            "text": "چون آيات ما بر او خوانده شد، گفت: افسانه‌هاى پيشينيان است"
        },
        {
            "chapter": 83,
            "verse": 14,
            "text": "حقا، كه كارهايى كه كرده بودند بر دلهاشان مسلط شده است"
        },
        {
            "chapter": 83,
            "verse": 15,
            "text": "حقا، كه در آن روز از پروردگارشان محجوب باشند"
        },
        {
            "chapter": 83,
            "verse": 16,
            "text": "پس ايشان به جهنم درآيند"
        },
        {
            "chapter": 83,
            "verse": 17,
            "text": "و آنها را گويند: اين است آنچه دروغش مى‌شمرديد"
        },
        {
            "chapter": 83,
            "verse": 18,
            "text": "حقا، كه اعمال نيكان در عِلّيّين مكتوب است"
        },
        {
            "chapter": 83,
            "verse": 19,
            "text": "و تو چه مى‌دانى كه عِلّيّين چيست؟"
        },
        {
            "chapter": 83,
            "verse": 20,
            "text": "كتابى است نوشته،"
        },
        {
            "chapter": 83,
            "verse": 21,
            "text": "كه مقربان خدا در آن مى‌نگرند"
        },
        {
            "chapter": 83,
            "verse": 22,
            "text": "هر آينه نيكان در نعمتند،"
        },
        {
            "chapter": 83,
            "verse": 23,
            "text": "بر تختها نشسته و نظاره مى‌كنند"
        },
        {
            "chapter": 83,
            "verse": 24,
            "text": "بر چهره‌هاشان طراوت نعمت را بشناسى"
        },
        {
            "chapter": 83,
            "verse": 25,
            "text": "از شرابى خالص كه بر سر آن مُهر نهاده‌اند سيراب مى‌شوند"
        },
        {
            "chapter": 83,
            "verse": 26,
            "text": "مُهر آن از مشك است و پيشدستى‌كنندگان در آن بر يكديگر پيشدستى مى‌كنند"
        },
        {
            "chapter": 83,
            "verse": 27,
            "text": "آميزه آن تَسنيم است"
        },
        {
            "chapter": 83,
            "verse": 28,
            "text": "چشمه‌اى است كه مقربان خدا از آن مى‌آشامند"
        },
        {
            "chapter": 83,
            "verse": 29,
            "text": "گناهكاران به مؤمنان مى‌خنديدند"
        },
        {
            "chapter": 83,
            "verse": 30,
            "text": "و چون بر آنها مى‌گذشتند، به چشم و ابرو اشاره مى‌كردند"
        },
        {
            "chapter": 83,
            "verse": 31,
            "text": "و چون نزد كسانشان بازمى‌گشتند، شادمانه بازمى‌گشتند"
        },
        {
            "chapter": 83,
            "verse": 32,
            "text": "و چون آنان را مى‌ديدند، مى‌گفتند كه اينان گمراهند"
        },
        {
            "chapter": 83,
            "verse": 33,
            "text": "و حال آنكه آنان را به مواظبت اعمال مؤمنان نفرستاده بودند"
        },
        {
            "chapter": 83,
            "verse": 34,
            "text": "و امروز مؤمنان به كافران مى‌خندند"
        },
        {
            "chapter": 83,
            "verse": 35,
            "text": "بر تختها تكيه زده‌اند و مى‌نگرند"
        },
        {
            "chapter": 83,
            "verse": 36,
            "text": "آيا كافران برابر اعمالشان پاداش يافته‌اند؟"
        }
    ]
}