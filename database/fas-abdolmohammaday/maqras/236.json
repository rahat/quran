{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "چون آسمان شكافته شود،"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "و به فرمان پروردگارش گوش دهد و حق بود كه چنين كند"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "و چون زمين منبسط شود،"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "و هر چه را كه در درون دارد بيرون افكند و تهى گردد،"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "و به فرمان پروردگارش گوش دهد و حق بود كه چنين كند"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "اى انسان، تو در راه پروردگارت رنج فراوان مى‌كشى؛ پس پاداش آن را خواهى ديد"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "هر كس كه نامه‌اش را به دست راستش دهند،"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "زودا كه آسان از او حساب كشند،"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "و شادمان نزد كسانش باز گردد"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "اما هر كس كه نامه‌اش از پشت سر داده شود،"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "زودا كه بگويد: واى بر من كه هلاك شدم"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "و به آتش افروخته درآيد"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "او در دنيا نزد كسانش شادمان زيسته بود"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "و مى‌پنداشته است كه هرگز باز نخواهد گشت"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "آرى پروردگارش او را مى‌ديده است"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "پس به شفق سوگند مى‌خورم،"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "و سوگند به شب و هر چه را فرو پوشد،"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "و سوگند به ماه چون فروغش كامل شود،"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "كه به حالى بعد از حال ديگر تحول خواهيد يافت"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "چه مى‌شودشان كه ايمان نمى‌آورند؟"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "و چون قرآن بر آنها خوانده شود سجده نمى‌كنند؟"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "بلكه، كافران تكذيب مى‌كنند"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "و خدا به آنچه در دل دارند آگاه است"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "پس آنان را به عذابى دردآور بشارت ده؛"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "مگر آنان كه ايمان آورده‌اند و كارهاى شايسته كرده‌اند كه پاداششان را پايانى نيست"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "قسم به آسمان كه دارنده برجهاست،"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "و قسم به روز موعود،"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "و قسم به شهادت‌دهنده و آنچه بدان شهادت دهند"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "كه اصحاب اُخدود به هلاكت رسيدند"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "آتشى افروخته از هيزمها،"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "آنگاه كه بر كنار آن آتش نشسته بودند،"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "و بر آنچه بر سر مؤمنان مى‌آوردند، شاهد بودند"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "و هيچ عيبى در آنها نيافتند جز آنكه به خداى پيروزمند در خور ستايش ايمان آورده بودند"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "آن خدايى كه فرمانروايى آسمانها و زمين از آن اوست، و بر هر چيزى ناظر است"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "هر آينه آنان كه مردان و زنان مؤمن را شكنجه كردند و توبه نكردند، عذاب جهنم و عذاب آتش براى آنهاست"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "براى كسانى كه ايمان آورده‌اند و كارهاى شايسته كرده‌اند بهشتهايى است كه در آن نهرها جارى است و آن كاميابى بزرگى است"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "فروگرفتن پروردگار تو سخت است"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "اوست كه نخست مى‌آفريند و پس از مرگ زنده مى‌سازد"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "او آمرزنده و دوست‌دارنده است"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "اوست صاحب عرش ارجمند"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "هر چه را اراده كند به انجام مى‌رساند"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "آيا داستان لشكرها را شنيده‌اى؟"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "لشكرهاى فرعون و قوم ثمود؟"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "آرى، آنان كه راه كفر پيش گرفته‌اند همچنان در تكذيب هستند"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "و خدا از همه سو بر آنها احاطه دارد"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "بلى اين قرآن مجيد است،"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "در لوح محفوظ"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و به آنچه در شب آيد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانى كه آنچه در شب آيد چيست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره‌اى است درخشنده"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر آنكه بر او نگهبانى است"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس آدمى بنگرد كه از چه چيز آفريده شده است،"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفريده شده است،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "كه از ميان پشت و سينه بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "خدا به باز گردانيدن او تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزى كه رازها آشكار مى‌شود،"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "او را نه نيرويى است و نه ياورى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "قسم به آسمان بازبارنده،"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "قسم به زمين رويان شكاف خورده،"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "كه اين كتاب، حق را از باطل جدا كند،"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و سخن هزل نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان حيله‌اى مى‌انديشند،"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من هم حيله‌اى مى‌انديشم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده، اندك مهلتشان ده"
        }
    ]
}