{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "قسم به اين شهر"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "و تو در اين شهر سكنا گرفته‌اى"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "و قسم به پدر و فرزندانى كه پديد آورد،"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "كه آدمى را در رنج و محنت بيافريده‌ايم،"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "آيا مى‌پندارد كه كس بر او چيره نگردد؟"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "مى‌گويد: مالى فراوان را تباه كردم"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "آيا مى‌پندارد كه كسى او را نديده است؟"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "آيا براى او دو چشم نيافريده‌ايم؟"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "و يك زبان و دو لب؟"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "و دو راه پيش پايش ننهاديم؟"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "و او در آن گذرگاه سخت قدم ننهاد"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "و تو چه دانى كه گذرگاه سخت چيست؟"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "آزاد كردن بنده است،"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "يا طعام دادن در روز قحطى،"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "خاصه به يتيمى كه خويشاوند باشد،"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "يا به مسكينى خاك‌نشين"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "تا از كسانى باشد كه ايمان آورده‌اند و يكديگر را به صبر سفارش كرده‌اند و به بخشايش"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "اينان اهل سعادتند"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "و كسانى كه به آيات ما كافرند اهل شقاوتند"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "نصيب آنهاست آتشى كه از هر سو سرش پوشيده است"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "سوگند به آفتاب و روشنى‌اش به هنگام چاشت،"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "و سوگند به ماه چون از پى آن برآيد،"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "و سوگند به روز چون گيتى را روشن كند،"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "و سوگند به شب چون فرو پوشدش،"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "و سوگند به آسمان و آن كه آن را بر آورده،"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "و سوگند به زمين و آن كه آن را بگسترده،"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "و سوگند به نفس و آن كه نيكويش بيافريده"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "سپس بديها و پرهيزگاريهايش را به او الهام كرده"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "كه: هر كه در پاكى آن كوشيد رستگار شد،"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "و هر كه در پليدى‌اش فرو پوشيد نوميد گرديد"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "قوم ثمود از روى سركشى تكذيب كردند"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "آنگاه كه شقى ترينشان برخاست"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "پيامبر خدا به آنها گفت كه ماده‌شتر خدا را با آبشخورش واگذاريد"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "تكذيبش كردند و شتر را پى كردند. پس پروردگارشان به سبب گناهشان بر سرشان عذاب آورد و با خاك يكسان ساخت"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "و او از سرانجام آن بيمناك نشد"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "سوگند به شب آنگاه كه جهان را در خود فرو پوشد،"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "و سوگند به روز آنگاه كه آشكار شود،"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "و سوگند به آن كه نر و ماده را بيافريد،"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "كه: حاصل كوششهاى شما متفاوت است"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "اما كسى كه بخشايش و پرهيزگارى كرد،"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "و آن بهترين را تصديق كرد،"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "پس براى بهشت آماده‌اش مى‌كنيم"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "اما آن كس كه بخل و بى نيازى ورزيد،"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "و آن بهترين را تكذيب كرد،"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "او را براى دوزخ آماده مى‌سازيم"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "و چون هلاكش دررسد، دارايى‌اش به حالش سود نبخشد"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "و آنچه بر ماست راهنمايى است"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "و از آنِ ماست آن جهان و اين جهان"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "پس شما را از آتشى كه زبانه مى‌كشد مى‌ترسانم"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "جز اهل شقاوت بدان درنيفتد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "آن كه تكذيب كرد و رويگردان شد"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و پرهيزگارترين مردم را از آن دور دارند"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "آن كه مال خويش مى‌بخشايد و پاكى مى‌جويد"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را بر او حقى نباشد كه اينك پاداش خواهد،"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "مگر جستن خشنودى پروردگار والاى خويش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و زودا كه خشنود شود"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "سوگند به آغاز روز،"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "و سوگند به شب چون آرام و در خود شود،"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "كه پروردگارت تو را ترك نكرده و بر تو خشم نگرفته است"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "هر آينه آخرت براى تو بهتر از دنياست"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "به زودى پروردگارت تو را عطا خواهد داد تا خشنود شوى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "آيا تو را يتيم نيافت و پناهت داد؟"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "آيا تو را گمگشته نيافت و هدايتت كرد؟"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "آيا تو را درويش نيافت و توانگرت گردانيد؟"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "پس يتيم را ميازار،"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و گدا را مَران،"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از نعمت پروردگارت سخن بگوى"
        }
    ]
}