{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "از چه چيز مى‌پرسند؟"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "از آن خبر بزرگ،"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "كه در آن اختلاف مى كنند"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "آرى، به زودى خواهند دانست"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "باز هم آرى، به زودى خواهند دانست"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "آيا ما زمين را بسترى نساختيم؟"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "و كوهها را ميخهايى؟"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "و شما را جفت جفت آفريديم"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "و خوابتان را آسايشتان گردانيديم"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "و شب را پوششتان قرار داديم"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "و روز را گاه طلب معيشت"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "و بر فراز سرتان هفت آسمان استوار بنا كرديم"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "و چراغى روشن آفريديم"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "از ابرهاى باران‌زاى آبى فراوان نازل كرديم،"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "تا بدان دانه و نبات برويانيم،"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "و بستانهاى انبوه"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "هر آينه روز داورى روزى است معين"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "روزى كه در صور دميده شود و شما فوج‌فوج بياييد"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "آسمان شكافته شود و هر شكاف درى باشد"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "و كوه‌ها روان شوند، و سراب گردند"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "جهنم در انتظار باشد"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "طاغيان را بازگشتنگاهى است"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "زمانى دراز در آنجا درنگ كنند"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "نه خُنكى چشند و نه آب؛"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "جز آب جوشان و خون و چرك"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "اين كيفرى است برابر كردار"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "زيرا آنان به روز حساب اميد نداشتند"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "و آيات ما را به سختى تكذيب مى‌كردند"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "و ما همه چيز را در كتابى شماره كرده‌ايم"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "پس بچشيد كه جز به شكنجه شما نخواهيم افزود"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "پرهيزگاران را جايى است در امان از هر آسيب؛"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "بستانها و تاكستانها،"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "و دخترانى همسال، با پستانهاى برآمده،"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "و جامهاى پر"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "نه سخن بيهوده شنوند و نه دروغ"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "و اين پاداشى است كافى، از جانب پروردگارت"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "پروردگار آسمانها و زمين و آنچه ميان آنهاست. آن خداى رحمان، كه كس را به او ياراى خطاب نباشد"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "روزى كه روح و فرشتگان به صف مى‌ايستند، و كس سخن نمى‌گويد مگر آنكه خداى رحمان به او رخصت دهد و او سخن به صواب گويد"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "آن روز روزى است آمدنى. پس هر كه خواهد به سوى پروردگارش بازگردد"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "ما شما را از عذابى نزديك مى‌ترسانيم: روزى كه آدمى هر چه را پيشاپيش فرستاده است مى‌نگرد و كافر مى‌گويد: اى كاش من خاك مى‌بودم"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "سوگند به فرشتگانى كه جانها را به قوت مى‌گيرند،"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "و سوگند به فرشتگانى كه جانها را به آسانى مى‌گيرند،"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "و سوگند به فرشتگانى كه شناورند،"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "و سوگند به فرشتگانى كه بر ديوان پيشى مى‌گيرند،"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "و سوگند به آنها كه تدبير كارها مى‌كنند،"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "كه آن روز كه نخستين نفخه قيامت زمين را بلرزاند،"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "و نفخه دوم از پس آن بيايد،"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "در آن روز دلهايى در هراس باشند،"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "و نشان خشوع در ديدگان نمايان"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "مى‌گويند: آيا ما به حالت نخستين بازمى‌گرديم،"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "آنگاه كه استخوانهايى پوسيده بوديم؟"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "گويند: اين بازگشت ما بازگشتى است زيان‌آور"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "جز اين نيست كه تنها يك بانگ برمى‌آيد،"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "و آنها خود را در آن صحرا خواهند يافت"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "آيا داستان موسى به تو رسيده است؟"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "آنگاه كه پروردگارش او را در وادى مقدس طوى ندا داد"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "به سوى فرعون برو كه طغيان كرده است"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "بگو: آيا تو را رغبتى هست كه پاكيزه شوى،"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "و من تو را به پروردگارت راه بنمايم و تو پروا كنى؟"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "پس آن آيت بزرگ را به او نشان داد"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "و او تكذيب كرد و عصيان ورزيد"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "سپس پشت كرد و مى‌شتافت"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "پس همه را گرد كرد و ندا داد،"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "و گفت: من پروردگار برتر شما هستم"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "خدايش به عذاب آخرت و دنيا گرفتار كرد"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "در اين عبرتى است براى كسى كه مى‌ترسد"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "آيا شما به خلقت سخت‌تريد يا اين آسمانى كه او بنا نهاده؟"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "سقفش را برافراشت و بپرداختش،"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "شبش را تاريك كرد و روشنايى‌اش را آشكار ساخت،"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "و پس از آن زمين را بگسترد،"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "و از آن آب بيرون آورد و چراگاه‌ها پديد كرد،"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "و كوه‌ها را استوار گردانيد،"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "براى بهره‌گيرى شما و چارپايانتان"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "چون آن حادثه بزرگ دررسد،"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "روزى كه آدمى همه اعمال خود را به ياد آورد،"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "و جهنم را به هر كه مى‌بيند نشان دهند؛"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "پس هر كه طغيان كرده،"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "و زندگى اينجهانى را برگزيده،"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "جهنم جايگاه اوست"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "اما هر كس كه از ايستادن در برابر پروردگارش ترسيده و نفس را از هوى بازداشته،"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "بهشت جايگاه اوست"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "تو را از قيامت مى‌پرسند كه چه وقت واقع شود"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "از يادكردن آن تو را چه كار است؟"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "منتهاى آن نزد پروردگار توست"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "جز اين نيست كه تو كسانى را كه از آن روز بترسند بيم مى‌دهى"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "چون آن را ببينند، پندارند در اين جهان جز يك شامگاه يا چاشت درنگ نكرده‌اند"
        }
    ]
}