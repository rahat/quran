{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار بزرگ خويش را به پاكى ياد كن"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "آن كه آفريد و درست‌اندام آفريد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آن كه اندازه معين كرد. سپس راه نمود"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آن كه چراگاه‌ها را رويانيد،"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "سپس خشك و سياه گردانيد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زودا كه براى تو بخوانيم، مباد كه فراموش كنى"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا بخواهد. اوست كه آشكارا و نهان را مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و تو را به كيش آسان توفيق دهيم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "اگر پند دادنت سود كند، پند ده"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "آن كه مى‌ترسد، پند مى‌پذيرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و بدبخت از آن دورى مى‌گزيند"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "آن كه به آتش بزرگ جهنم درافتد،"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "و در آنجا نه بميرد و نه زنده باشد"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "هر آينه پاكان رستگار شدند؛"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "آنان كه نام پروردگار خود را بر زبان آوردند و نماز گزاردند"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "آرى، شما زندگى اين جهان را بر مى‌گزينيد،"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "حال آنكه آخرت بهتر و پاينده‌تر است"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "اين سخن در صحيفه‌هاى نخستين است"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "صحيفه‌هاى ابراهيم و موسى"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "آيا داستان غاشيه به تو رسيده است؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در آن روز وحشت در چهره‌ها پديدار است،"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "تلاش كرده و رنج ديده،"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "در آتش سوزان در افتند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از آن چشمه بسيار گرم آبشان دهند،"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "طعامى جز خار ندارند،"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "كه نه فربه مى‌كند و نه دفع گرسنگى"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "و در آن روز چهره‌هايى تازه باشند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از كار خويشتن خشنود،"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشتى برين،"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "كه در آن سخن لغو نشنوى،"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "و در آن چشمه‌سارها روان باشد،"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "و تختهايى بلندزده،"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و سبوهايى نهاده،"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهايى در كنار هم چيده،"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرشهايى گسترده"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آيا به شتر نمى‌نگرند كه چگونه آفريده شده؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و به آسمان كه چسانش برافراشته‌اند؟"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و به كوه‌ها كه چگونه بركشيده‌اند؟"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمين كه چسان گسترده شده؟"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس پند ده، كه تو پند دهنده‌اى هستى"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "تو بر آنان فرمانروا نيستى"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر آن كس كه رويگردان شد و كفر ورزيد،"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "پس خدايش به عذاب بزرگ‌تر عذاب مى‌كند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "هر آينه بازگشتشان به سوى ماست"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس حسابشان با ماست"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "سوگند به سپيده صبح،"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "و سوگند به شبهاى دهگانه،"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "و سوگند به جفت و طاق،"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "و سوگند به شب چون روى به رفتن نهد"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "آيا خردمند را اين سوگندها كافى است؟"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "آيا نديده‌اى كه پروردگار تو با قوم عاد چه كرد؟"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "با اِرَم كه ستونها داشت؟"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "و همانند آن در هيچ شهرى آفريده نشده بود"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "و قوم ثمود كه در آن وادى سنگ را مى‌بريدند،"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "و قوم فرعون آن دارنده ميخها،"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "آنها در بلاد طغيان كردند،"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "و در آنها به فساد در افزودند"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "و پروردگار تو تازيانه عذاب را بر سرشان فرود آورد"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "زيرا پروردگارت به كمينگاه است"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "اما آدمى، چون پروردگارش بيازمايد و گرامى‌اش دارد و نعمتش دهد، مى‌گويد: پروردگار من مرا گرامى داشت"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "و چون بيازمايدش و رزق بر او تنگ گيرد، مى‌گويد: پروردگار من مرا خوار ساخت"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "نه چنان است. شما يتيم را گرامى نمى‌داريد،"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "و يكديگر را به اطعام مسكين ترغيب نمى‌كنيد،"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "و ميراث را حريصانه مى‌خوريد،"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "و مال را فراوان دوست داريد"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "آرى، چون زمين شكسته شود و شكسته شود،"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "و امر پروردگار تو فرا رسد و فرشتگان صف در صف،"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "و در آن روز جهنم را حاضر آرند، آدمى پند گيرد. و چه جاى پند گرفتن باشد؟"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "مى‌گويد: اى كاش زنده‌گشتن خويش را پيشاپيش چيزى مى‌فرستادم"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "در آن روز كسى چون عذاب او عذاب نكند،"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "و همانند زنجير او به زنجير نكشد"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "اى روح آرامش يافته،"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "خشنود و پسنديده به سوى پروردگارت باز گرد،"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "و در زمره بندگان من داخل شو،"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "و به بهشت من درآى"
        }
    ]
}