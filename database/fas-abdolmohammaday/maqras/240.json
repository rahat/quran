{
    "maqras": [
        {
            "chapter": 100,
            "verse": 9,
            "text": "آيا نمى‌داند كه چون آنچه در گورهاست زنده گردد،"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "و آنچه در دلها نهان است آشكار شود،"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "پروردگارشان در آن روز از حالشان آگاه است؟"
        },
        {
            "chapter": 101,
            "verse": 1,
            "text": "قارعه"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "چيست قارعه؟"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "و تو چه دانى كه قارعه چيست؟"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "روزى است كه مردم چون پروانگان پراكنده باشند،"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "و كوه‌ها چون پشم‌زده شده"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "اما هر كه كفّه ترازويش سنگين باشد،"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "در يك زندگى پسنديده است"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "و اما هر كه كفه ترازويش سبك باشد،"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "جايگاهش در هاويه است"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "و تو چه دانى كه هاويه چيست؟"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "آتشى است در نهايت گرمى"
        },
        {
            "chapter": 102,
            "verse": 1,
            "text": "به غفلت كشيد شما را نازشِ به بسيارى مال و فرزند،"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "تا به گورها رسيديد"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "حقا كه به زودى خواهيد دانست"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "باز هم حقا كه به زودى خواهيد دانست"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "حقا، اگر از روى يقين بدانيد،"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "البته جهنم را خواهيد ديد"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "سپس به چشم يقينش خواهيد ديد،"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "كه در آن روز شما را از نعمتهاى دنيوى بازخواست مى‌كنند"
        },
        {
            "chapter": 103,
            "verse": 1,
            "text": "سوگند به اين زمان،"
        },
        {
            "chapter": 103,
            "verse": 2,
            "text": "كه آدمى در خسران است"
        },
        {
            "chapter": 103,
            "verse": 3,
            "text": "مگر آنها كه ايمان آوردند و كارهاى شايسته كردند و يكديگر را به حق سفارش كردند و يكديگر را به صبر سفارش كردند"
        },
        {
            "chapter": 104,
            "verse": 1,
            "text": "واى بر هر غيبت‌كننده عيبجويى؛"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "آن كه مالى گرد كرد و حساب آن نگه داشت"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "مى‌پندارد كه دارايى‌اش جاويدانش گرداند"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "نه چنين است. كه او را در حُطَمه اندازند"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "و تو چه دانى كه حطمه چيست؟"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "آتش افروخته خداست،"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "كه بر دلها غلبه مى‌يابد"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "و از هر سو در ميانشان گرفته است،"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "در شعله‌هايى برافراشته"
        },
        {
            "chapter": 105,
            "verse": 1,
            "text": "آيا نديده‌اى كه پروردگارت با اصحاب فيل چه كرد؟"
        },
        {
            "chapter": 105,
            "verse": 2,
            "text": "آيا مكرشان را باطل نساخت؟"
        },
        {
            "chapter": 105,
            "verse": 3,
            "text": "و بر سر آنها پرندگانى فوج‌فوج فرستاد،"
        },
        {
            "chapter": 105,
            "verse": 4,
            "text": "تا آنها را با سِجّيل سنگباران كردند"
        },
        {
            "chapter": 105,
            "verse": 5,
            "text": "و آنان را چون كاه پس‌مانده در آخور ساخت"
        },
        {
            "chapter": 106,
            "verse": 1,
            "text": "براى ائتلاف قريش؛"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "ائتلافشان در سفر زمستانى و تابستانى"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس بايد پروردگار اين خانه را بپرستند"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "آن كه به هنگام گرسنگى طعامشان داد و از بيم در امانشان داشت"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آيا آن را كه روز جزا را دروغ مى‌شمرد ديدى؟"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "او همان كسى است كه يتيم را به اهانت مى‌راند،"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و مردم را به طعام‌دادن به بينوا وانمى‌دارد"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس واى بر آن نمازگزارانى‌"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "كه در نماز خود سهل انگارند؛"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "آنان كه ريا مى‌كنند،"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و از دادن زكات دريغ مى‌ورزند"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "ما كوثر را به تو عطا كرديم"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس براى پروردگارت نماز بخوان و قربانى كن‌"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "كه بدخواه تو خود اَبتر است"
        },
        {
            "chapter": 109,
            "verse": 1,
            "text": "بگو: اى كافران،"
        },
        {
            "chapter": 109,
            "verse": 2,
            "text": "من چيزى را كه شما مى‌پرستيد نمى‌پرستم"
        },
        {
            "chapter": 109,
            "verse": 3,
            "text": "و شما نيز چيزى را كه من مى‌پرستم نمى‌پرستيد"
        },
        {
            "chapter": 109,
            "verse": 4,
            "text": "و من پرستنده چيزى كه شما مى‌پرستيد نيستم"
        },
        {
            "chapter": 109,
            "verse": 5,
            "text": "و شما پرستنده چيزى كه من مى‌پرستم نيستيد"
        },
        {
            "chapter": 109,
            "verse": 6,
            "text": "شما را دين خود، و مرا دين خود"
        },
        {
            "chapter": 110,
            "verse": 1,
            "text": "چون يارى خدا و پيروزى فراز آيد،"
        },
        {
            "chapter": 110,
            "verse": 2,
            "text": "و مردم را ببينى كه فوج‌فوج به دين خدا درمى‌آيند،"
        },
        {
            "chapter": 110,
            "verse": 3,
            "text": "پس به ستايش پروردگارت تسبيح گوى و از او آمرزش بخواه، كه او توبه‌پذير است"
        },
        {
            "chapter": 111,
            "verse": 1,
            "text": "دستهاى ابولهب بريده باد و هلاك بر او"
        },
        {
            "chapter": 111,
            "verse": 2,
            "text": "دارايى او و آنچه به دست آورده بود به حالش سود نكرد"
        },
        {
            "chapter": 111,
            "verse": 3,
            "text": "زودا كه به آتشى شعله‌ور درافتد"
        },
        {
            "chapter": 111,
            "verse": 4,
            "text": "و زنش هيزم‌كش است"
        },
        {
            "chapter": 111,
            "verse": 5,
            "text": "و بر گردن ريسمانى از ليف خرما دارد"
        },
        {
            "chapter": 112,
            "verse": 1,
            "text": "بگو: اوست خداى يكتا،"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "خداى كه در حاجت به او رو كنند،"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "نه زاده است و نه زاده شده،"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و نه هيچ كس همتاى اوست"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "بگو: به پروردگار صبحگاه پناه مى‌برم،"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از شر آنچه بيافريده است،"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از شر شب چون درآيد،"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از شر جادوگرانى كه در گره‌ها افسون مى‌دمند،"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "از شر حسود چون رشك مى‌ورزد"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "بگو: به پروردگار مردم پناه مى‌برم،"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "فرمانرواى مردم،"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "خداى مردم،"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از شر وسوسه وسوسه‌گر نهانى،"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "آن كه در دلهاى مردم وسوسه مى‌كند،"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "خواه از جنيان باشد يا از آدميان"
        }
    ]
}