{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "آيا داستان غاشيه به تو رسيده است؟"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "در آن روز وحشت در چهره‌ها پديدار است،"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "تلاش كرده و رنج ديده،"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "در آتش سوزان در افتند"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "از آن چشمه بسيار گرم آبشان دهند،"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "طعامى جز خار ندارند،"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "كه نه فربه مى‌كند و نه دفع گرسنگى"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "و در آن روز چهره‌هايى تازه باشند"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "از كار خويشتن خشنود،"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "در بهشتى برين،"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "كه در آن سخن لغو نشنوى،"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "و در آن چشمه‌سارها روان باشد،"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "و تختهايى بلندزده،"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "و سبوهايى نهاده،"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "و بالشهايى در كنار هم چيده،"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "و فرشهايى گسترده"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "آيا به شتر نمى‌نگرند كه چگونه آفريده شده؟"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "و به آسمان كه چسانش برافراشته‌اند؟"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "و به كوه‌ها كه چگونه بركشيده‌اند؟"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "و به زمين كه چسان گسترده شده؟"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "پس پند ده، كه تو پند دهنده‌اى هستى"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "تو بر آنان فرمانروا نيستى"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "مگر آن كس كه رويگردان شد و كفر ورزيد،"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "پس خدايش به عذاب بزرگ‌تر عذاب مى‌كند"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "هر آينه بازگشتشان به سوى ماست"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "سپس حسابشان با ماست"
        }
    ]
}