{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "روى را ترش كرد و سر برگردانيد"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "چون آن نابينا به نزدش آمد"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "و تو چه دانى، شايد كه او پاكيزه شود،"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "يا پند گيرد و پند تو سودمندش افتد"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "اما آن كه او توانگر است،"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "تو روى خود بدو مى‌كنى"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "و اگر هم پاك نگردد چيزى بر عهده تو نيست"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "و اما آن كه دوان‌دوان به نزد تو مى‌آيد،"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "و مى‌ترسد،"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "تو از او به ديگرى مى‌پردازى"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "آرى، اين قرآن اندرزى است،"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "پس هر كه خواهد از آن پند گيرد"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "در صحيفه‌هايى گرامى،"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "بلندقدر و پاكيزه،"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "به دست كاتبانى،"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "بزرگوار و نيكوكار"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "مرگ بر آدمى باد كه چه ناسپاس است"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "او را از چه آفريده است؟"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "از نطفه‌اى آفريد و به اندازه پديد آورد"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "سپس راهش را آسان ساخت"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "آنگاه بميراندش و در گور كرد"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "و آنگاه كه خواهد زنده‌اش سازد"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "نه، كه هنوز آنچه را به او فرمان داده بود به جاى نياورده است"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "پس آدمى به طعام خود بنگرد"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "ما باران را فرو باريديم، باريدنى"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "و زمين را شكافتيم، شكافتنى"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "و در آن دانه‌ها رويانيديم،"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "و تاك و سبزيهاى خوردنى،"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "و زيتون و نخل،"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "و باغهاى پردرخت،"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "و ميوه و علف،"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "تا شما و چارپايانتان بهره بريد"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "چون بانگ قيامت برآيد،"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "روزى كه آدمى از برادرش مى‌گريزد،"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "و از مادرش و پدرش،"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "و از زنش و فرزندانش"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "هر كس را در آن روز كارى است كه به خود مشغولش دارد"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "چهره‌هايى در آن روز درخشانند،"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "خندانند و شادانند"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "و چهره‌هايى در آن روز غبارآلودند"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "در سياهى فرو رفته‌اند"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "اينان كافران و فاجرانند"
        }
    ]
}