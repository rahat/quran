{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "بخوان به نام پروردگارت كه بيافريد"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "آدمى را از لخته‌خونى بيافريد"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "بخوان، و پروردگار تو ارجمندترين است"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "خدايى كه به وسيله قلم آموزش داد،"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "به آدمى آنچه را كه نمى‌دانست بياموخت"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "حقا كه آدمى نافرمانى مى‌كند،"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "هرگاه كه خويشتن را بى‌نياز بيند"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "هر آينه بازگشت به سوى پروردگار توست"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "آيا ديدى آن كس را كه منع مى‌كند"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "بنده‌اى را كه نماز مى‌خواند؟"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "چه مى‌بينى اگر آن مرد بر طريق هدايت باشد؟"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "يا به پرهيزگارى فرمان دهد؟"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "چه مى‌بينى اگر تكذيب كند و رويگردان شود؟"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "آيا ندانسته است كه خدا مى‌بيند؟"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "حقا، كه اگر بازنايستد موى پيش سرش را مى‌گيريم و مى‌كشيم"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "موى پيش سر دروغگوى خطاكار را"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "پس همدمان خود را بخواند"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "ما نيز كارگزاران دوزخ را فرا مى‌خوانيم"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "نه، هرگز، از او پيروى مكن و سجده كن و به خدا نزديك شو"
        }
    ]
}