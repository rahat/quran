{
    "rukus": [
        {
            "chapter": 53,
            "verse": 33,
            "text": "آيا آن را كه از تو رويگردان شد ديدى؟"
        },
        {
            "chapter": 53,
            "verse": 34,
            "text": "اندك مى‌بخشيد و در انفاق بخل مى‌ورزيد"
        },
        {
            "chapter": 53,
            "verse": 35,
            "text": "آيا علم غيب دارد و مى‌بيند؟"
        },
        {
            "chapter": 53,
            "verse": 36,
            "text": "يا از آنچه در صحيفه‌هاى موسى آمده بى‌خبر مانده است؟"
        },
        {
            "chapter": 53,
            "verse": 37,
            "text": "يا از ابراهيم، كه حق رسالت را ادا كرد؟"
        },
        {
            "chapter": 53,
            "verse": 38,
            "text": "كه هيچ كس بار گناه ديگرى را برندارد؟"
        },
        {
            "chapter": 53,
            "verse": 39,
            "text": "و اينكه: براى مردم پاداشى جز آنچه خود كرده‌اند نيست؟"
        },
        {
            "chapter": 53,
            "verse": 40,
            "text": "و زودا كه كوشش او در نظر آيد"
        },
        {
            "chapter": 53,
            "verse": 41,
            "text": "سپس به او پاداشى تمام دهند"
        },
        {
            "chapter": 53,
            "verse": 42,
            "text": "و پايان راه همه، پروردگار توست"
        },
        {
            "chapter": 53,
            "verse": 43,
            "text": "و اوست كه مى‌خنداند و مى‌گرياند"
        },
        {
            "chapter": 53,
            "verse": 44,
            "text": "و اوست كه مى‌ميراند و زنده مى‌كند"
        },
        {
            "chapter": 53,
            "verse": 45,
            "text": "و اوست كه جفتهاى نر و ماده را آفريده است،"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "از نطفه، آنگاه كه در رحم ريخته مى‌شود"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "و بر خداوند است كه آن را بار ديگر زنده كند"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "و اوست كه بى‌نياز كند و روزى دهد"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "و اوست پرردگار ستاره شِعرى"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "و اوست كه عاد، آن قوم پيشين را هلاك كرد،"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "و از ثمود هيچ باقى نگذاشت"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "و پيش از آنها قوم نوح را، كه ستمكارتر و سركش‌تر بودند،"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "و نيز مؤتفكه را نابود كرد"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "و فروپوشيد آن قوم را، هر چه بايد فروپوشد"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "پس به كدام يك از نعمتهاى پروردگارت شك مى‌كنى؟"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "اين بيم‌دهنده‌اى است همانند بيم‌دهندگان پيشين"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "قيامت فرا رسيد"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "كس جز خداوند آشكارش نكند"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "آيا از اين سخن در شگفت افتاده‌ايد؟"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "و مى‌خنديد و نمى‌گرييد؟"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "و شما غافل شده‌ايد"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "پس خدا را سجده كنيد و او را بپرستيد"
        }
    ]
}