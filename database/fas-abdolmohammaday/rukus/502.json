{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "پرسنده‌اى از عذابى پرسيد كه‌"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "بر كافران فرود خواهد آمد و كس آن را دفع نتواند كرد،"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "از جانب خدا كه صاحب آسمانها"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "در روزى كه مقدارش پنجاه هزار سال است، فرشتگان و روح بدان جا فراروند"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "پس صبر كن صبرى نيكو"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "ايشان آن روز را دور مى‌بينند"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "و ما نزديكش مى‌بينيم"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "روزى كه آسمان چون فلز گداخته گردد،"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "و كوه‌ها چون پشم،"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "و هيچ خويشاوندى از حال خويشاوند خود نپرسد،"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "يكديگر را برابر چشمشان آرند. گناهكار دوست دارد كه خويشتن را بازخرد به فرزندانش،"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "و زنش و برادرش،"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "و عشيره‌اش كه او را مكان داده است،"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "و همه آنها كه در روى زمينند، و نجات يابد"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "هرگز نه، كه آن شعله آتش است،"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "پوست سر را مى‌كند،"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "هر كه را كه به حق پشت كرد و از فرمان سرپيچيد به خود مى‌خواند،"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "و آن را كه گردمى‌آورد و مى‌اندوخت"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "هر آينه آدمى را حريص و ناشكيبا آفريده‌اند"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "چون شرى بدو رسد بيقرارى كند"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "و چون مالى به دستش افتد بخل مى‌ورزد"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "مگر نماز گزارندگان"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "آنان كه به نماز مداومت مى‌ورزند،"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "و آنان كه در اموالشان حقى است معين،"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "براى گدا و محروم"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "و كسانى كه روز قيامت را تصديق مى‌كنند،"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "و كسانى كه از عذاب پروردگارشان ترسانند،"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "كه از عذاب پروردگارشان در امان نتوانند بود،"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "و كسانى كه شرمگاه خويش نگه مى‌دارند،"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "مگر براى همسرانشان يا كنيزانشان، كه در اين حال ملامتى بر آنها نيست"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "و آنان كه جز اين را بطلبند، متجاوزان هستند"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "و كسانى كه امانتها و عهدهاى خود را رعايت مى‌كنند،"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "و كسانى كه شهادت خويش به حق ادا مى‌كنند،"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "و كسانى كه بر نمازهاشان مواظبت دارند،"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "اينان در بهشت، گرامى هستند"
        }
    ]
}