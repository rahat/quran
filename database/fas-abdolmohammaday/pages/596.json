{
    "pages": [
        {
            "chapter": 92,
            "verse": 15,
            "text": "جز اهل شقاوت بدان درنيفتد"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "آن كه تكذيب كرد و رويگردان شد"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "و پرهيزگارترين مردم را از آن دور دارند"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "آن كه مال خويش مى‌بخشايد و پاكى مى‌جويد"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "و هيچ كس را بر او حقى نباشد كه اينك پاداش خواهد،"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "مگر جستن خشنودى پروردگار والاى خويش"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "و زودا كه خشنود شود"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "سوگند به آغاز روز،"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "و سوگند به شب چون آرام و در خود شود،"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "كه پروردگارت تو را ترك نكرده و بر تو خشم نگرفته است"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "هر آينه آخرت براى تو بهتر از دنياست"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "به زودى پروردگارت تو را عطا خواهد داد تا خشنود شوى"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "آيا تو را يتيم نيافت و پناهت داد؟"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "آيا تو را گمگشته نيافت و هدايتت كرد؟"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "آيا تو را درويش نيافت و توانگرت گردانيد؟"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "پس يتيم را ميازار،"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "و گدا را مَران،"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "و از نعمت پروردگارت سخن بگوى"
        },
        {
            "chapter": 94,
            "verse": 1,
            "text": "آيا سينه‌ات را برايت نگشوديم؟"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "و بار گرانت را از پشتت برنداشتيم؟"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "بارى كه بر پشت تو سنگينى مى‌كرد؟"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "آيا تو را بلندآوازه نساختيم؟"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "پس، از پى دشوارى آسانى است"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "هر آينه از پى دشوارى آسانى است"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "چون از كار فارغ شوى، به عبادت كوش"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "و به پروردگارت مشتاق شو"
        }
    ]
