{
    "pages": [
        {
            "chapter": 54,
            "verse": 50,
            "text": "فرمان ما تنها يك فرمان است، آن هم چشم بر هم زدنى است"
        },
        {
            "chapter": 54,
            "verse": 51,
            "text": "كسانى را كه همانند شما بودند، هلاك كرديم. آيا پندگيرنده‌اى هست؟"
        },
        {
            "chapter": 54,
            "verse": 52,
            "text": "هر كارى كه كرده‌اند در دفترهاست"
        },
        {
            "chapter": 54,
            "verse": 53,
            "text": "هر كار بزرگ و كوچكى مكتوب است"
        },
        {
            "chapter": 54,
            "verse": 54,
            "text": "پرهيزگاران در باغها و كنار جويبارانند"
        },
        {
            "chapter": 54,
            "verse": 55,
            "text": "در جايگاهى پسنديده، نزد فرمانروايى توانا"
        },
        {
            "chapter": 55,
            "verse": 1,
            "text": "خداى رحمان،"
        },
        {
            "chapter": 55,
            "verse": 2,
            "text": "قرآن را تعليم داد"
        },
        {
            "chapter": 55,
            "verse": 3,
            "text": "انسان را بيافريد"
        },
        {
            "chapter": 55,
            "verse": 4,
            "text": "به او گفتن آموخت"
        },
        {
            "chapter": 55,
            "verse": 5,
            "text": "آفتاب و ماه به حسابى مقرر در حركتند"
        },
        {
            "chapter": 55,
            "verse": 6,
            "text": "و گياه و درخت سجده‌اش مى‌كنند"
        },
        {
            "chapter": 55,
            "verse": 7,
            "text": "آسمان را برافراخت و ترازو را برنهاد"
        },
        {
            "chapter": 55,
            "verse": 8,
            "text": "تا در ترازو تجاوز مكنيد"
        },
        {
            "chapter": 55,
            "verse": 9,
            "text": "وزن‌كردن را به عدالت رعايت كنيد و كم‌فروشى مكنيد"
        },
        {
            "chapter": 55,
            "verse": 10,
            "text": "زمين را براى مردم قرار داد"
        },
        {
            "chapter": 55,
            "verse": 11,
            "text": "در آن ميوه‌هاست و نخلها، با خوشه‌هايى كه در غلافند"
        },
        {
            "chapter": 55,
            "verse": 12,
            "text": "و دانه‌هايى كه همراه با كاهند و نيز گياهان خوشبو"
        },
        {
            "chapter": 55,
            "verse": 13,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را انكار مى‌كنيد؟"
        },
        {
            "chapter": 55,
            "verse": 14,
            "text": "آدمى را از گل خشك‌شده‌اى چون سفال بيافريد"
        },
        {
            "chapter": 55,
            "verse": 15,
            "text": "و جن را از شعله‌اى بى‌دود"
        },
        {
            "chapter": 55,
            "verse": 16,
            "text": "پس كدام يك از نعمتهاى پروردگارتان را انكار مى‌كنيد؟"
        }
    ]
}