{
    "pages": [
        {
            "chapter": 69,
            "verse": 35,
            "text": "در آن روز، در آنجا هيچ دوستى نخواهد داشت"
        },
        {
            "chapter": 69,
            "verse": 36,
            "text": "طعامش چيزى جز چرك و خون اهل دوزخ نيست"
        },
        {
            "chapter": 69,
            "verse": 37,
            "text": "تنها خطاكاران از آن طعام مى‌خورند"
        },
        {
            "chapter": 69,
            "verse": 38,
            "text": "پس سوگند به آنچه مى‌بينيد،"
        },
        {
            "chapter": 69,
            "verse": 39,
            "text": "و آنچه نمى‌بينيد،"
        },
        {
            "chapter": 69,
            "verse": 40,
            "text": "كه اين سخن فرستاده‌اى بزرگوار است،"
        },
        {
            "chapter": 69,
            "verse": 41,
            "text": "نه سخن شاعرى. چه اندك ايمان مى‌آوريد"
        },
        {
            "chapter": 69,
            "verse": 42,
            "text": "و نيز سخن كاهنى نيست. چه اندك پند مى‌گيريد"
        },
        {
            "chapter": 69,
            "verse": 43,
            "text": "از جانب پروردگار جهانيان نازل شده است"
        },
        {
            "chapter": 69,
            "verse": 44,
            "text": "اگر پيامبر پاره‌اى سخنان را به افترا بر ما مى‌بست،"
        },
        {
            "chapter": 69,
            "verse": 45,
            "text": "با قدرت او را فرومى‌گرفتيم،"
        },
        {
            "chapter": 69,
            "verse": 46,
            "text": "سپس رگ دلش را پاره مى‌كرديم،"
        },
        {
            "chapter": 69,
            "verse": 47,
            "text": "و هيچ يك از شما را توان آن نبود كه مانع شود"
        },
        {
            "chapter": 69,
            "verse": 48,
            "text": "و قرآن براى پرهيزگاران پندى است"
        },
        {
            "chapter": 69,
            "verse": 49,
            "text": "ما مى‌دانيم كه از ميان شما كسانى هستند كه تكذيب مى‌كنند"
        },
        {
            "chapter": 69,
            "verse": 50,
            "text": "و قرآن كافران را مايه حسرت است"
        },
        {
            "chapter": 69,
            "verse": 51,
            "text": "و آن سخن حق و يقين است"
        },
        {
            "chapter": 69,
            "verse": 52,
            "text": "پس به نام پروردگار بزرگت تسبيح بگوى"
        },
        {
            "chapter": 70,
            "verse": 1,
            "text": "پرسنده‌اى از عذابى پرسيد كه‌"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "بر كافران فرود خواهد آمد و كس آن را دفع نتواند كرد،"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "از جانب خدا كه صاحب آسمانها"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "در روزى كه مقدارش پنجاه هزار سال است، فرشتگان و روح بدان جا فراروند"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "پس صبر كن صبرى نيكو"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "ايشان آن روز را دور مى‌بينند"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "و ما نزديكش مى‌بينيم"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "روزى كه آسمان چون فلز گداخته گردد،"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "و كوه‌ها چون پشم،"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "و هيچ خويشاوندى از حال خويشاوند خود نپرسد،"
        }
    ]
}