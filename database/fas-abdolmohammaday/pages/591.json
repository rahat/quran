{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "سوگند به آسمان و به آنچه در شب آيد"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "و تو چه دانى كه آنچه در شب آيد چيست؟"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "ستاره‌اى است درخشنده"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "هيچ كس نيست مگر آنكه بر او نگهبانى است"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "پس آدمى بنگرد كه از چه چيز آفريده شده است،"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "از آبى جهنده آفريده شده است،"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "كه از ميان پشت و سينه بيرون مى‌آيد"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "خدا به باز گردانيدن او تواناست"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "روزى كه رازها آشكار مى‌شود،"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "او را نه نيرويى است و نه ياورى"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "قسم به آسمان بازبارنده،"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "قسم به زمين رويان شكاف خورده،"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "كه اين كتاب، حق را از باطل جدا كند،"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "و سخن هزل نيست"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "آنان حيله‌اى مى‌انديشند،"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "و من هم حيله‌اى مى‌انديشم"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "پس كافران را مهلت ده، اندك مهلتشان ده"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "نام پروردگار بزرگ خويش را به پاكى ياد كن"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "آن كه آفريد و درست‌اندام آفريد"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "و آن كه اندازه معين كرد. سپس راه نمود"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "و آن كه چراگاه‌ها را رويانيد،"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "سپس خشك و سياه گردانيد"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "زودا كه براى تو بخوانيم، مباد كه فراموش كنى"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "مگر آنچه خدا بخواهد. اوست كه آشكارا و نهان را مى‌داند"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "و تو را به كيش آسان توفيق دهيم"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "اگر پند دادنت سود كند، پند ده"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "آن كه مى‌ترسد، پند مى‌پذيرد"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "و بدبخت از آن دورى مى‌گزيند"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "آن كه به آتش بزرگ جهنم درافتد،"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "و در آنجا نه بميرد و نه زنده باشد"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "هر آينه پاكان رستگار شدند؛"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "آنان كه نام پروردگار خود را بر زبان آوردند و نماز گزاردند"
        }
    ]
}