{
    "pages": [
        {
            "chapter": 53,
            "verse": 45,
            "text": "و اوست كه جفتهاى نر و ماده را آفريده است،"
        },
        {
            "chapter": 53,
            "verse": 46,
            "text": "از نطفه، آنگاه كه در رحم ريخته مى‌شود"
        },
        {
            "chapter": 53,
            "verse": 47,
            "text": "و بر خداوند است كه آن را بار ديگر زنده كند"
        },
        {
            "chapter": 53,
            "verse": 48,
            "text": "و اوست كه بى‌نياز كند و روزى دهد"
        },
        {
            "chapter": 53,
            "verse": 49,
            "text": "و اوست پرردگار ستاره شِعرى"
        },
        {
            "chapter": 53,
            "verse": 50,
            "text": "و اوست كه عاد، آن قوم پيشين را هلاك كرد،"
        },
        {
            "chapter": 53,
            "verse": 51,
            "text": "و از ثمود هيچ باقى نگذاشت"
        },
        {
            "chapter": 53,
            "verse": 52,
            "text": "و پيش از آنها قوم نوح را، كه ستمكارتر و سركش‌تر بودند،"
        },
        {
            "chapter": 53,
            "verse": 53,
            "text": "و نيز مؤتفكه را نابود كرد"
        },
        {
            "chapter": 53,
            "verse": 54,
            "text": "و فروپوشيد آن قوم را، هر چه بايد فروپوشد"
        },
        {
            "chapter": 53,
            "verse": 55,
            "text": "پس به كدام يك از نعمتهاى پروردگارت شك مى‌كنى؟"
        },
        {
            "chapter": 53,
            "verse": 56,
            "text": "اين بيم‌دهنده‌اى است همانند بيم‌دهندگان پيشين"
        },
        {
            "chapter": 53,
            "verse": 57,
            "text": "قيامت فرا رسيد"
        },
        {
            "chapter": 53,
            "verse": 58,
            "text": "كس جز خداوند آشكارش نكند"
        },
        {
            "chapter": 53,
            "verse": 59,
            "text": "آيا از اين سخن در شگفت افتاده‌ايد؟"
        },
        {
            "chapter": 53,
            "verse": 60,
            "text": "و مى‌خنديد و نمى‌گرييد؟"
        },
        {
            "chapter": 53,
            "verse": 61,
            "text": "و شما غافل شده‌ايد"
        },
        {
            "chapter": 53,
            "verse": 62,
            "text": "پس خدا را سجده كنيد و او را بپرستيد"
        },
        {
            "chapter": 54,
            "verse": 1,
            "text": "قيامت نزديك شد و ماه دو پاره گرديد"
        },
        {
            "chapter": 54,
            "verse": 2,
            "text": "و اگر معجزه‌اى ببينند، روى بگردانند و گويند: جادويى بزرگ است"
        },
        {
            "chapter": 54,
            "verse": 3,
            "text": "و تكذيب مى‌كنند و از پى هواهاى خويش مى‌روند. و هر كارى را هدفى است"
        },
        {
            "chapter": 54,
            "verse": 4,
            "text": "و برايشان خبرهايى آمده است كه از گناهشان بازمى‌دارد"
        },
        {
            "chapter": 54,
            "verse": 5,
            "text": "حكمتى است تمام. ولى بيم‌دهندگان سودشان ندهند"
        },
        {
            "chapter": 54,
            "verse": 6,
            "text": "پس در آن روز كه آن دعوت‌كننده، آنان را به چيزى ناخوش فرامى‌خواند، از ايشان رويگردان شو"
        }
    ]
}