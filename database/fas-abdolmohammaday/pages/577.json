{
    "pages": [
        {
            "chapter": 74,
            "verse": 48,
            "text": "پس شفاعت شفاعت‌كنندگان سودشان نبخشيد"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "چه شده است كه از اين پند اعراض مى‌كنند؟"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "مانند گورخران رميده‌"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "كه از شير مى‌گريزند"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "بلكه هر يك از ايشان مى‌خواهد كه نامه‌هايى گشاده به او داده شود"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "آرى، كه از آخرت نمى‌ترسند"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "آرى، كه اين قرآن اندرزى است"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "هر كه خواهد، آن را بخواند"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "و پند نمى‌گيرند، مگر اينكه خدا خواهد. او شايان آن است كه از او بترسند. و او شايان آمرزيدن است"
        },
        {
            "chapter": 75,
            "verse": 1,
            "text": "قسم مى‌خورم به روز قيامت"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "و قسم مى‌خورم به نفس ملامتگر"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "آيا آدمى مى‌پندارد كه ما استخوانهايش را گرد نخواهيم آورد؟"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "آرى، ما قادر هستيم كه سر انگشتهايش را برابر كنيم"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "بلكه آدمى مى‌خواهد كه در آينده نيز به كارهاى ناشايست پردازد"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "مى‌پرسد: روز قيامت چه وقت خواهد بود؟"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "روزى كه چشمها خيره شود،"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "و ماه تيره شود،"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "و آفتاب و ماه در يك جاى گرد آيند"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "انسان در آن روز مى‌گويد: راه گريز كجاست؟"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "هرگز، پناهگاهى نيست"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "قرارگاه همه در اين روز نزد پروردگار توست"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "در اين روز آدمى را از هر چه پيشاپيش فرستاده و بعد از خويش گذاشته است خبر مى‌دهند"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "بلكه آدمى خويشتن خويش را نيك مى‌شناسد،"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "هر چند به زبان عذرها آورد"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "به تعجيل زبان به خواندن قرآن مجنبان،"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "كه گردآوردن و خواندنش بر عهده ماست"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "چون خوانديمش، تو آن خواندن را پيروى كن"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "سپس بيان آن بر عهده ماست"
        }
    ]
}