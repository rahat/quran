{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "براى ائتلاف قريش؛"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "ائتلافشان در سفر زمستانى و تابستانى"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "پس بايد پروردگار اين خانه را بپرستند"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "آن كه به هنگام گرسنگى طعامشان داد و از بيم در امانشان داشت"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "آيا آن را كه روز جزا را دروغ مى‌شمرد ديدى؟"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "او همان كسى است كه يتيم را به اهانت مى‌راند،"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "و مردم را به طعام‌دادن به بينوا وانمى‌دارد"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "پس واى بر آن نمازگزارانى‌"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "كه در نماز خود سهل انگارند؛"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "آنان كه ريا مى‌كنند،"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "و از دادن زكات دريغ مى‌ورزند"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "ما كوثر را به تو عطا كرديم"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "پس براى پروردگارت نماز بخوان و قربانى كن‌"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "كه بدخواه تو خود اَبتر است"
        }
    ]
}