{
    "rukus": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Per quina cosa es pregunten uns a uns altres"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Per l'Enorme Notícia"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "sobre la qual discrepen"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "No! Ja veuran"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "No i no! Ja veuran"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "No hem fet de la terra jaç"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "i de les muntanyes estaques"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "I us hem creat per parelles"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "fet del vostre somni descans"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "de la nit vestidura"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "del dia mig de subsistència"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "I hem edificat damunt de vosaltres set cels ferms"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "i col·locat una llum resplendent"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "I hem fet baixar dels núvols un aigua abundant"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "per a, mitjançant ella, treure gra, plantes"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i frondosos jardins"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "El dia del Veredicte està ja assenyalat"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Dia que es tocarà la trompeta i acudireu en massa"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "El cel s'obrirà, tot portes"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "les muntanyes, engegades, seran miratge"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "La Jahenam, a l'aguait"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "serà refugi dels rebels"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "que romandran en ella durant generacions"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "sense provar frescor ni beguda"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "fora d'aigua molt calenta i pudent líquid"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "retribució adequada"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "No contaven amb l'ajustament de comptes"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "i van desmentir descaradament Els nostres signes"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "sent així que havíem consignat tot en una Escriptura"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "«Agradeu, doncs! No farem sinó augmentar-vos el càstig!»"
        }
    ]
}