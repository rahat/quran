{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Quan succeeixi l'Esdeveniment"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "ningú podrà negar-ho"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Abatrà, exaltarà"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Quan la terra sofreixi una violenta sacsejada"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "i les muntanyes siguin totalment esmicolades"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "convertint-se en fina pols dispers"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "i sigueu dividits en tres grups"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Els de la dreta -què són els de la dreta"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "els de l'esquerra -què són els de l'esquerra"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "i els més distingits, què són els més distingits"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Aquests són els afins"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "en els jardins de la Delícia"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Haurà molts dels primers"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "i pocs dels últims"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "En jaços entreteixits d'or i pedres precioses"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "reclinats en ells, uns enfront d'uns altres"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Circularan entre ells joves criats d'eterna joventut"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "amb calzes, gerros i una copa d'aigua viva"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "que no els donarà mal de cap ni embriagarà"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "amb fruita que ells escolliran"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "amb la carn d'au que els apeteixi"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Haurà huríes de grans ulls"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "semblants a perles ocultes"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "com retribució a les seves obres"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "No escoltaran allí xarrameca ni incitació al pecat"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "sinó una paraula: «Pau! Pau!»"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Els de la dreta -què són els de la dreta"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "estaran entre ginjolers sense espines"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "i d'acàcies coberts de fruits"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "en una extensa ombra"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "prop d'aigua corrent"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "i abundant fruita"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "inesgotable i permesa"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "en jaços elevats"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Nosaltres les hem format de manera especial"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "i fet verges"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "afectuoses, d'una mateixa edat"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "per als de la dreta"
        }
    ]
}