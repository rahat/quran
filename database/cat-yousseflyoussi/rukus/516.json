{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "Pels enviats en ràfegues"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Pels que bufen violentament"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Pels que disseminen en tots els sentits"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Pels que distingeixen clarament"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Pels que llancen una amonestació"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "a manera d'excusa o d'advertiment"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Certament, allò amb que se us amenaça es complirà"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Quan les estrelles perden la seva llum"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "quan el cel s’esberla"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "quan les muntanyes siguin reduïdes a pols"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "quan es fixi als Missatgers el seu temps"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "«Quin dia compareixeran?»"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "«El dia del Veredicte!»"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "I com sabràs què és el dia del Veredicte"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Aquest dia, ai dels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "No hem fet que perissin els primers homes"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "i, després, que els seguissin els últims"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Així farem amb els pecadors"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "No us hem creat d'un líquid vil"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "que hem dipositat en un receptacle segur"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "durant un temps determinat"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Així ho hem decidit i què bé que ho hem decidit"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "No hem fet de la terra lloc de reunió"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "de vius i morts"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "i lloc en ella elevades muntanyes? No us hem donat de beure un aigua dolça"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "«Aneu al que desmentíeu"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Aneu a l'ombra ramificada en tres"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "ombra tènue, ombra inútil enfront de la flama!»"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Perquè llança espurnes grans com palaus"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "espurnes que assemblen camells lleonats"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Aquest serà un dia que no haurien de dir"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "ni se'ls permetrà excusar-se"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Aquest dia,que penes pels desmentidors"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "«Aquest és el dia del Veredicte. Us hem reunit, a vosaltres i als antics"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Si disposeu d'algun ardit, empreu-lo contra mi»"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Aquest dia,que penes pels desmentidors"
        }
    ]
}