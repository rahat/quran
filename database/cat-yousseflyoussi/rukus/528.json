{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Pel cel i l'astre nocturn"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "I com sabràs què és l'Astre Nocturn"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "És l'estrella de penetrant llum"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "No hi ha ningú que no tingui un guardià"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Que consideri l'home de què ha estat creat"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Ha estat creat d'un líquid fluent"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "que surt d'entre els ronyons i les costelles"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "En veritat, Ell és capaç de tornar-li"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "el dia que siguin provats els secrets"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "i no tingui ja força ni qui li auxiliï"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Pel cel periòdic"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Per la terra que s'obre"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "És, en veritat, una paraula decisiva"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "seriosa"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Ells empren un ardit"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "i Jo empro un ardit"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Concedeix una pròrroga als infidels, un poc més de pròrroga"
        }
    ]
}