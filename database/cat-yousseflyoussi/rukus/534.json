{
    "rukus": [
        {
            "chapter": 92,
            "verse": 1,
            "text": "Per la nit quan estén el seu vel"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Pel dia quan resplandeix"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Per Qui ha creat al baró i a la femella"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "El vostre esforç, en veritat, dóna resultats diversos"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "A qui dóna, tem (a Déu)"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "i creu en el més bell"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "li facilitarem l'accés a la major felicitat"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "En canvi, a qui és avar, creu bastar-se a si mateix"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "i desmenteix el més bell"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "li facilitarem l'accés a la major adversitat"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "i de res li servirà la seva hisenda quan sigui precipitat"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Sí, és de incumbencia Nostra Guia"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Sí, és cosa Nostra l'altra vida i aquesta"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Us he previngut contra un foc flamejant"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "en el qual només cremarà l'infame"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "que desmenteix i es desvia"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "mentres que l´evitarà el temorós"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "que dóna la seva hisenda per a purificar-se"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "que, quan fa un favor, no ho fa amb ànim de ser retribuït"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "sinó tan sols per desig d'agradar al seu altíssim Senyor"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Sí, aquest quedarà satisfet"
        }
    ]
}