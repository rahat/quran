{
    "rukus": [
        {
            "chapter": 37,
            "verse": 114,
            "text": "Ja agraciem a Moisés i a Aarón"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "Els salvem, a ells i al seu poble, d'un greu desastre"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "Els auxiliem i van ser ells els quals van guanyar"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "Els Vam donar l'Escriptura clara"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "Els dirigim per la via recta"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "i perpetuem el seu record en la posteritat"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "Pau sobre Moisés i Aarón"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "Així retribuïm a qui fan el bé"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "Van ser dos dels nostres serfs creients"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "Elías va anar, certament, un dels Missatgers"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "Quan va dir al seu poble: «És que no aneu a témer a Al·là"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "Invocareu a Baal, deixant al Millor dels creadors"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "a Al·là, Senyor vostre i Senyor dels vostres avantpassats?»"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "Li van desmentir i se'ls farà, certament, comparèixer"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "no, en canvi, als serfs escollits d'Al·là"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "I perpetuem el seu record en la posteritat"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "Pau sobre Elías"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "Així retribuïm a qui fan el bé"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "Va ser un dels nostres serfs creients"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "Lot va ser, certament, un dels Missatgers"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "Quan els salvem, a ell i a la seva família, a tots"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "excepte a una vella entre els quals es va ressagar-se"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "Després, Vam aniquilar als altres"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "Passeu, sí, sobre ells, matí"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "i tarda. És que no compreneu"
        }
    ]
}