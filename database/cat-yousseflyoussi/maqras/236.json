{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Quan el cel s'esgarrà"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "i escolti al seu Senyor -com ha de ser"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "quan la terra sigui aplanada"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "vomiti el seu contingut, buidant-se"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "i escolti al seu Senyor -com ha de ser"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Home! T'esforces amb intrepidesa a trobar al teu Senyor i Li trobaràs"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Aquell que rebi la seva Escriptura en la destra"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "serà jutjat benignament"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "i regressarà, alegre, als seus"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Però aquell que rebi la seva Escriptura darrere de l'esquena"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "invocarà la destrucció"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "però cremarà en el Foc Flamejant"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Vivia alegre amb els seus"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "creient que no anava a tornar"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Clar que si! El seu Senyor li veia bé"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Doncs no! Juro pel rojor vespertí"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "a la nit i pel que congrega"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "per la lluna quan està plena"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "que heu de passar d'un a altre estat"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Però què els passa que no creuen"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "i, quan se'ls recita l'Alcorà, no es prosternen"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "No! Els infidels desmenteixen"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "però Al·là coneix bé el que oculten"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Anuncia'ls, doncs, un càstig dolorós"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Qui, en canvi, creen i obrin bé, rebran una recompensa ininterrompuda"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Pel cel amb les seves constel·lacions"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Pel dia amb que s'ha amenaçat"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Pel testimoni i el testificat"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Maleïts siguin els homes de la Fossa"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "del foc bé alimentat"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "asseguts a ell"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "donant testimoniatge del que ells han fet als creients"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "ressentits amb ells només perquè van creure en Al·là, el Poderós, el Digne de Lloança"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "a Qui pertany el domini dels cels i de la terra. Al·là és testimoni de tot"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Qui sotmetin als creients i a les creients a una prova i no es penedeixin després, tindran el càstig de la Jahenam, el càstig crematori del seu foc"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Qui, en canvi, hagin cregut i obrat bé tindran jardins pels baixos dels quals fluïxen rierols. Aquest és el gran èxit"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Sí, és dur el rigor del teu Senyor"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Ell crea i recrea"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "Ell és l'Indulgent, el Ple d'Amor"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "el Senyor del Tron, el Gloriós"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Que sempre fa el que vol"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "T'has assabentat de la història dels exèrcits"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "de Faraó i dels Tamudís"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Els infidels, no obstant això, persisteixen a desmentir"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "però Al·là els té a La seva mercè"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Si és un Alcorà gloriós"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "en una Taula bé guardada"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Pel cel i l'astre nocturn"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "I com sabràs què és l'Astre Nocturn"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "És l'estrella de penetrant llum"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "No hi ha ningú que no tingui un guardià"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Que consideri l'home de què ha estat creat"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Ha estat creat d'un líquid fluent"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "que surt d'entre els ronyons i les costelles"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "En veritat, Ell és capaç de tornar-li"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "el dia que siguin provats els secrets"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "i no tingui ja força ni qui li auxiliï"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Pel cel periòdic"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Per la terra que s'obre"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "És, en veritat, una paraula decisiva"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "seriosa"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Ells empren un ardit"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "i Jo empro un ardit"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Concedeix una pròrroga als infidels, un poc més de pròrroga"
        }
    ]
}