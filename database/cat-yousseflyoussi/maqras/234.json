{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Va frunzir les celles i va tornar l'esquena"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "perquè el cec vi a ell"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Qui sap? Potser volia purificar-se"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "o deixar-se amonestar i que l'amonestació li aprofités"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "A qui és ric"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "li dispenses una bona acollida"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "i et té sense cura que no vulgui purificar-se"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "En canvi, de qui ve a tu, corrent"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "tement(Al·là)"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "et despreocupes"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "No! És un Record"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "que recordarà qui vulgui"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "contingut en fulles venerades"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "sublims, purificades"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "escrit per mà d'escribes"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "nobles, piadosos"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Maleït sigui l'home! Quin desagraït és"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "De quin ho ha creat Ell"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "D'una gota ho ha creat i determinat"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "després, li ha facilitat el camí"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "després, li ha fet morir i ser sepultat"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "després, quan Ell vulgui, li ressuscitarà"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "No! No ha complert encara el que Ell li ha ordenat"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Que miri l'home el seu aliment"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Nosaltres hem vessat l'aigua en abundància"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "i seguidament fenem la terra en solcs"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "i fet créixer en ella gra"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "vinyes, hortalisses"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "oliveres, palmeres"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "frondosos jardins"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "fruites, pastures"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "per a gaudi vostre i dels vostres ramats"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "I quan arribi l´Estrèpit"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "el dia que l'home fugi del seu germà"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "de la seva mare i del seu pare"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "de la seva companya i dels seus fills"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "aquest dia, cadascú tindrà bastant amb si mateix"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "Aquest dia, uns rostres estaran radiants"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "riallers, alegres"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "mentre que uns altres, aquest dia, tindran pols damunt"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "els cobrirà una negror"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "aquests seran els infidels, els pecadors"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Quan el sol sigui enfosquit"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "quan les estrelles perdin la seva lluentor"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "quan les muntanyes siguin engegades"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "quan les camelles prenyades de deu mesos siguin descurades"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "quan les bèsties salvatges siguin agrupades"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "quan els mars siguin inflats"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "quan les ànimes siguin apariades"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "quan es pregunti a la nena enterrada viva"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "quin crim va cometre perquè la matessin"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "quan les fulles siguin desplegades"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "quan el cel sigui escorxat"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "quan el Jaheem sigui avivat"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "quan el Paradís sigui acostat"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "cadascú sabrà el que presenta"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Doncs no! Juro pels planetes"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "que passen i desapareixen"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "A la nit quan s'estén"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Al matí quan respira"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Sí, és la paraula d'un Missatger noble"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "que disposa de poder al costat del Senyor del Tron, ferm"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "obeït allà i digne de confiança"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "El vostre paisà no és un possés"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Li ha vist en el clar horitzó"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "no és avar de l'ocult"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "No és la paraula d'un dimoni maleït"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "On anireu, doncs"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "No és sinó una amonestació dirigida a tot el món"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "per a aquells de vosaltres que vulguin seguir la via recta"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Però vosaltres no ho voldreu, tret que vulgui Al·là, Senyor de l'univers"
        }
    ]
}