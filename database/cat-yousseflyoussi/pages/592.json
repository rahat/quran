{
    "pages": [
        {
            "chapter": 87,
            "verse": 16,
            "text": "Però preferiu la vida d'aquí"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "sent així que l'altra és millor i més duradora"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Això es troba en les Fulles Primers"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "les Fulles d'Abraham i de Moisés"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "T'has assabentat de la història de la que cobreix"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Aquest dia, uns rostres, humiliats"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "preocupats, cansats"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "cremaran en un foc abrasador"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Se'ls donarà de beure d'una font bullent"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "No tindran més aliment que de Dari"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "que no engreixa, ni sadolla"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Altres rostres, aquest dia, estaran alegres"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "satisfets del seu esforç"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "en un Jardí elevat"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "en el qual no s'escoltarà xerrameca"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Haurà allí una font cabalosa"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "jaços elevats"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "copes preparades"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "coixins alineats"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "i catifes esteses"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "És que no consideren com han estat creats els camèlids"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "com el cel ha estat alçat"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "com les muntanyes han estat erigides"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "com la terra ha estat estesa"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Amonesta, doncs! Tu ets només un monitor"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "no tens autoritat sobre ells"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "No obstant això, a qui es desviï i no crea"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Al·là li infligirà el càstig major"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Tornaran tots a Nosaltres"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Després, ens tocarà a Nosaltres demanar-los comptes"
        }
    ]
}