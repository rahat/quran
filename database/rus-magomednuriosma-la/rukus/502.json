{
    "rukus": [
        {
            "chapter": 70,
            "verse": 1,
            "text": "Nekiy muzh sprosil, kogda zhe postignet nevernykh"
        },
        {
            "chapter": 70,
            "verse": 2,
            "text": "neotvratimoye nakazaniye"
        },
        {
            "chapter": 70,
            "verse": 3,
            "text": "ot Allakha, vladyki stupeney"
        },
        {
            "chapter": 70,
            "verse": 4,
            "text": "Angely i Dukh (t. ye. Dzhibril) voskhodyat k Nemu v den', ravnyy po vremeni pyatidesyati tysyacham let"
        },
        {
            "chapter": 70,
            "verse": 5,
            "text": "Terpi zhe blagogoveyno"
        },
        {
            "chapter": 70,
            "verse": 6,
            "text": "ved' lyudyam etot [den'] predstavlyayetsya otdalennym"
        },
        {
            "chapter": 70,
            "verse": 7,
            "text": "a My vidim, chto on blizok"
        },
        {
            "chapter": 70,
            "verse": 8,
            "text": "V tot den' nebo upodobitsya rasplavlennomu metallu"
        },
        {
            "chapter": 70,
            "verse": 9,
            "text": "gory budut [myagki], kak sherst'"
        },
        {
            "chapter": 70,
            "verse": 10,
            "text": "i rodich ne stanet rassprashivat' [svoyego] rodicha"
        },
        {
            "chapter": 70,
            "verse": 11,
            "text": "khotya oni i budut videt' [odin drugogo]. Greshnik zakhochet otkupit'sya ot nakazaniya svoimi synov'yami"
        },
        {
            "chapter": 70,
            "verse": 12,
            "text": "svoyey suprugoy i bratom"
        },
        {
            "chapter": 70,
            "verse": 13,
            "text": "svoim rodom, kotoryy podderzhival yego"
        },
        {
            "chapter": 70,
            "verse": 14,
            "text": "i vsemi zhitelyami zemli, chtoby spastis'"
        },
        {
            "chapter": 70,
            "verse": 15,
            "text": "Tak net, [oni ne spasutsya], ibo eto [nakazaniye] - plamya"
        },
        {
            "chapter": 70,
            "verse": 16,
            "text": "sdirayushcheye kozhu s golovy"
        },
        {
            "chapter": 70,
            "verse": 17,
            "text": "zovushcheye tekh, kto otvratilsya [ot pokornosti Allakhu] i otvernulsya [ot istiny]"
        },
        {
            "chapter": 70,
            "verse": 18,
            "text": "kto skolotil [sostoyaniye] i bereg yego"
        },
        {
            "chapter": 70,
            "verse": 19,
            "text": "Voistinu, chelovek sozdan neterpelivym"
        },
        {
            "chapter": 70,
            "verse": 20,
            "text": "bespokoynym, kogda yego postignet beda"
        },
        {
            "chapter": 70,
            "verse": 21,
            "text": "skupym, kogda yemu dostanetsya dobro"
        },
        {
            "chapter": 70,
            "verse": 22,
            "text": "Eto ne otnositsya k tem, kotoryye molyatsya"
        },
        {
            "chapter": 70,
            "verse": 23,
            "text": "sovershayut obryadovuyu molitvu vsyakiy raz, [kogda polozheno]"
        },
        {
            "chapter": 70,
            "verse": 24,
            "text": "kotoryye vydelyayut dolyu imushchestva"
        },
        {
            "chapter": 70,
            "verse": 25,
            "text": "dlya prositeley i obezdolennykh"
        },
        {
            "chapter": 70,
            "verse": 26,
            "text": "[ne otnositsya] k tem, kotoryye priznayut Sudnyy den'"
        },
        {
            "chapter": 70,
            "verse": 27,
            "text": "kotoryye boyatsya nakazaniya Gospoda svoyego"
        },
        {
            "chapter": 70,
            "verse": 28,
            "text": "poskol'ku neotvratimo nakazaniye Gospodne"
        },
        {
            "chapter": 70,
            "verse": 29,
            "text": "krome tekh, kotoryye blyudut svoyu dobrodetel'"
        },
        {
            "chapter": 70,
            "verse": 30,
            "text": "krome kak po otnosheniyu k svoim suprugam i nevol'nitsam, za chto im net poritsaniya"
        },
        {
            "chapter": 70,
            "verse": 31,
            "text": "A te, kto perekhodit za predely skazannogo, - oni prestupniki"
        },
        {
            "chapter": 70,
            "verse": 32,
            "text": "Te zhe, kotoryye sokhranyayut doverennoye im i ne narushayut klyatv"
        },
        {
            "chapter": 70,
            "verse": 33,
            "text": "kotoryye stoyki v svoikh svidetel'stvakh"
        },
        {
            "chapter": 70,
            "verse": 34,
            "text": "kotoryye [berezhno] blyudut molitvy"
        },
        {
            "chapter": 70,
            "verse": 35,
            "text": "oni i budut pochitayemy v [rayskikh] sadakh"
        }
    ]
}