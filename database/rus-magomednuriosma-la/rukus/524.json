{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kogda razverznetsya nebo"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "kogda zvezdy osyplyutsya"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "kogda sol'yutsya voyedino morya"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "kogda mogily otverznutsya"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "to uznayet kazhdyy chelovek, chtob on sovershil i chego ne sovershil [iz dobrykh i zlykh deyaniy]"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O chelovek! Chto zhe vvelo tebya v zabluzhdeniye otnositel'no tvoyego velikodushnogo Gospoda"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "kotoryy sotvoril tebya, pridal tebe tvoy oblik, nadelil tebya sorazmernost'yu [chlenov]"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "i voplotil tebya v tot obraz, v kakoy pozhelal"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Tak net zhe! Vy otritsayete Sudnyy den'"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Voistinu, k vam pristavleny nablyudateli"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "dostoynyye pistsy"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "kotoryye znayut obo vsekh vashikh deyaniyakh"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Voistinu, pravedniki prebudut v blazhenstve (t. ye. v rayu)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "A greshniki, voistinu, budut v adu"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "kuda vvergnut ikh v Sudnyy den'"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "I oni ne smogut izbezhat' yego"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Otkuda tebe znat', chto takoye Sudnyy den'"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "I yeshche raz - otkuda tebe znat', chto takoye Sudnyy den'"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Eto den', kogda ni odin chelovek ne vlasten nichem pomoch' drugomu, i poveleniye v tot den' prinadlezhit [tol'ko Allakhu]"
        }
    ]
}