{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kogda nagryanet [Den'] voskreseniya"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "nikto ne smozhet otritsat' yego"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "on unizit [odnikh], vozvysit [drugikh]"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Kogda drognet zemlya, sodrogayas'"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "kogda gory rukhnut, rassypayas'"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "i v prakh obrashchayas'"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "razdelites' vy na tri gruppy"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "te, kto stoit na pravoy storone. Kto zhe te, chto na pravoy storone"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "I te, kto stoit na levoy storone. Kto zhe te, chto na levoy storone"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "A takzhe operedivshiye [drugikh na puti k Allakhu]. [Tak kto zhe oni] - operedivshiye [drugikh]"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Eto - te, kotoryye priblizheny [k chertogu Allakha]"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "[i budut obretat'sya] v blagodatnykh sadakh"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Bol'shaya chast' ikh - iz prezhnikh narodov"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "i nebol'shaya chast' - iz posleduyushchikh"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "[Oni budut] vozlezhat' na vyshitykh lozhakh"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "drug protiv druga, oblokotivshis' na [izgolov'ya]"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Vechno yunyye otroki budut obkhodit' ikh"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "s chashami, kuvshinami i kubkami s napitkom iz rodnikov"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "ot kotorogo ne bolit golova i ne khmeleyut"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "s plodami, kakikh oni pozhelayut"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "myasom ptits, kakogo oni zakhotyat"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Chernookiye, bol'sheglazyye devy"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "podobnyye sokrytym [v rakovine] zhemchuzhinam"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "[i vse eto] - v vozdayaniye za to, chto oni vershili [v etom mire]"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Oni ne uslyshat tam ni suyetnykh, ni grekhovnykh rechey"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "a tol'ko slovo: \"Mir! Mir"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Te, chto stoyat na pravoy storone, - kto zhe oni"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Oni budut tam sredi lotosov, shipov lishennykh"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "pod bananami, otyagoshchennymi plodami"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "v teni [derev'yev] raskidistykh"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "sredi ruch'yev tekuchikh"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "i plodov obil'nykh"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "dostupnykh i razreshennykh"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "sredi [supruzheskikh] lozh, vysoko vozdvignutykh"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Voistinu, My sotvorili ikh (t. ye. suprug)"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "i sokhranili devstvennitsami"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "lyubyashchimi [zhenami], ravnymi po vozrastu"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "dlya tekh, kto na pravoy storone"
        }
    ]
}