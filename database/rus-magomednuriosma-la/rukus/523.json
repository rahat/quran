{
    "rukus": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Kogda solntse pokroyetsya mrakom"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "kogda zvezdy pomerknut"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "kogda gory pridut v dvizheniye"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "kogda verblyuditsy, beremennyye na desyatom mesyatse, ostanutsya bez prismotra"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "kogda soberutsya [vse] dikiye zveri"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "kogda morya vyydut iz beregov"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "kogda dushi soyedinyatsya [s telami]"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "kogda zarytuyu zazhivo sprosyat"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "za kakoy zhe grekh yeye ubili"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "kogda razvernut svitki [lyudskikh deyaniy]"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "kogda nebo budet nizrinuto"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "kogda razgoritsya adskiy ogon'"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "kogda ray priblizitsya [k pravednikam]"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "togda poznayet kazhdaya dusha, chto ona ugotovila sebe [deyaniyami svoimi]"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "No net zhe! Klyanus' svetilami"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "peredvigayushchimisya [po nebu] i ischezayushchimi [s nebosvoda]"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "klyanus' vechernim [sumrakom] gusteyushchim"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "klyanus' zarey brezzhashchey"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "chto, voistinu, eto (t. ye. Koran) - slova poslantsa blagorodnogo"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "obladatelya sily pri Vlastitele Trona, mogushchestvennogo"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "togo, komu povinuyutsya angely, i dostoynogo doveriya"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Tot, s kem vy sporite, vovse ne bezumets"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "ibo on videl yego (t. ye. Dzhibrila) na yasnom nebosklone"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "i on (t. ye. Mukhammad) ne skupitsya soobshchit' drugim [povedannoye yemu] sokrovennoye otkroveniye"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Eto (t. ye. Koran) - ne rechi pobivayemogo kamnyami shaytana"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Tak kuda zhe vy ustremlyayetes', [otritsaya Koran]"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "Ved' on - tol'ko nazidaniye dlya obitateley mirov"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "dlya tekh iz vas, kto khochet stat' na pryamoy put'"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "No vy ne [smozhete] zakhotet' etogo, yesli togo ne zakhochet Allakh, Gospod' [obitateley] mirov"
        }
    ]
}