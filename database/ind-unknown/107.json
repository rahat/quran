{
    "chapter": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "Tahukah kamu (orang) yang mendustakan agama"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Maka itulah orang yang menghardik anak yatim"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "dan tidak mendorong memberi makan orang miskin"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Maka celakalah orang yang shalat"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "(yaitu) orang-orang yang lalai terhadap shalatnya"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "yang berbuat ria"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "dan enggan (memberikan) bantuan"
        }
    ]
}