{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Hari Kiamat"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Apakah hari Kiamat itu"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Dan tahukah kamu apakah hari Kiamat itu"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Pada hari itu manusia seperti laron yang beterbangan"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "dan gunung-gunung seperti bulu yang dihambur-hamburkan"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Maka adapun orang yang berat timbangan (kebaikan)nya"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "maka dia berada dalam kehidupan yang memuaskan (senang)"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Dan adapun orang yang ringan timbangan (kebaikan)nya"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "maka tempat kembalinya adalah neraka Hawiyah"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Dan tahukah kamu apakah neraka Hawiyah itu"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "(Yaitu) api yang sangat panas"
        }
    ]
}