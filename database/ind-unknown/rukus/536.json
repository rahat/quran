{
    "rukus": [
        {
            "chapter": 94,
            "verse": 1,
            "text": "Bukankah Kami telah melapangkan dadamu (Muhammad)"
        },
        {
            "chapter": 94,
            "verse": 2,
            "text": "dan Kami pun telah menurunkan bebanmu darimu"
        },
        {
            "chapter": 94,
            "verse": 3,
            "text": "yang memberatkan punggungmu"
        },
        {
            "chapter": 94,
            "verse": 4,
            "text": "dan Kami tinggikan sebutan (nama)mu bagimu"
        },
        {
            "chapter": 94,
            "verse": 5,
            "text": "Maka sesungguhnya beserta kesulitan ada kemudahan"
        },
        {
            "chapter": 94,
            "verse": 6,
            "text": "sesungguhnya beserta kesulitan itu ada kemudahan"
        },
        {
            "chapter": 94,
            "verse": 7,
            "text": "Maka apabila engkau telah selesai (dari sesuatu urusan), tetaplah bekerja keras (untuk urusan yang lain)"
        },
        {
            "chapter": 94,
            "verse": 8,
            "text": "dan hanya kepada Tuhanmulah engkau berharap"
        }
    ]
}