{
    "chapter": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "[On] Furukūʙanda"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "[On] Furukūʙanda cist"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Va tu ci donī, ki [on] furukūʙanda cist"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "Rūze, ki mardum monandi parvonahoi parokanda [hajronu sargardon] xohand ʙud"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Va kūhho monandi paşmi rangini halloçişuda (zadaşuda) xohand şud"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Va ammo har kase, ki [dar on rūz] pallai mizonaş sangin ʙoşad"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "[Dar ʙihişt] Dar zindagii rohatʙaxş xohad ʙud"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Va ammo har kas, ki pallai mizonaş saʙuk ʙoşad"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Pas, [maskanu] panohgohaş «hovija» ast"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Va tu ci donī, ki on [hovija] cist"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Otaşe ast sūzon [va şu'lavar]"
        }
    ]
}