{
    "pages": [
        {
            "chapter": 78,
            "verse": 31,
            "text": "Ved' dlya bogoboyaznennykh yest' mesto spaseniya"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "sady i vinogradniki"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "i polnogrudyye sverstnitsy"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "i kubok polnyy"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Ne uslyshat oni tam ni boltovni, ni obvineniya vo lzhi"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "v vozdayaniye ot tvoyego Gospoda - dar, raschet"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Gospoda nebes i zemli i togo, chto mezhdu nimi, milostivogo. Oni ne poluchat ot Nego rechi"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "v tot den', kogda stanut dukh i angely ryadami; ne budet govorit' nikto, krome tekh, komu dozvolit Miloserdnyy, i skazhet On istinu"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "Etot den' - istina, i kto pozhelayet, ugotovayet k svoyemu Gospodu put' vozvrata"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "My predosteregli vas blizkim nakazaniyem v tot den', kogda chelovek uvidit, chto ugotovali yego ruki, i skazhet nevernyy: \"O, yesli by ya byl prakhom"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Klyanus' vyryvayushchimi s siloy"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "izvlekayushchimi stremitel'no"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "plavayushchimi plavno"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "operezhayushchimi bystro"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "i rasprostranyayushchimi prikaz"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "V tot den', kogda zadrozhit drozhashchaya"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "i posleduyet za ney sleduyushchaya"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "serdtsa v tot den' - trepeshchushchiye"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "vzory - smirennyye"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Govoryat oni: \"Neuzheli zhe my vozvrashchayemsya v prezhneye"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Razve togda, kak my byli kostyami istlevshimi"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Skazhut oni: \"Eto, znachit, - vozvrat nevygodnyy"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "I vot tol'ko odno sotryaseniye"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "i vot oni - navechno bodrstvuyushchiye"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Doshel li do tebya rasskaz o Muse"
        }
    ]
}