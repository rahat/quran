{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Bogoboyaznennyye ved' sredi teni, i istochnikov"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "i plodov, kakikh ni pozhelayut"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Yesh'te i peyte vo zdraviye za to, chto vy tvorili"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Poistine, tak My voznagrazhdayem dobrodeyushchikh"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Gore v tot den' obvinyayushchim vo lzhi"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yesh'te i pol'zuytes' nemnogo: ved' vy - greshniki"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Gore v tot den' obvinyayushchim vo lzhi"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "I kogda skazhut im: \"Poklonites'!\" - oni ne klanyayutsya"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Gore v tot den' obvinyayushchim vo lzhi"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "V kakoy zhe rasskaz posle etogo vy uveruyete"
        }
    ]
}