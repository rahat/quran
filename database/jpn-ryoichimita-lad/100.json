{
    "chapter": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "Hakuiki araku shingeki suru (uma) ni oite (chikau)"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "Hidzume ni hibana o chirashi"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "akatsuki ni kyūshū shite"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "sajin o makiage"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "(teki no) gunzei no mattadanaka ni totsunyū suru toki"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "Hontōni ningen wa, jibun no omo ni taishi onshirazudearu"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "Sore ni tsuki, kare wa makotoni shōnindeari"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "mata tomi o aisuru koto ni netchū suru"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "Kare wa haka no naka no mono ga abaki dasa reru toki no koto o shiranai no ka"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "Mata mune no naka ni aru mono ga, bakuro sa reru no o"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "Hontōni omo wa, sonohi, kare-ra ni tsuite subete shitte ora reru"
        }
    ]
}