        {
            "chapter": 107,
            "verse": 1,
            "text": "Anata wa, shinpan o usodearu to suru mono o mita ka"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Kare wa, minashigo ni tearaku suru monodeari"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "mata hinja ni shokumotsu o ataeru koto o susumenai monodearu"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Wazawai naru ka na, reihai suru monodearinagara"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "jibun no reihai o yurugase ni suru mono"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "(Hito ni) mi rareru tame no reihai o shi"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "jizen o kotowaru mono ni"
        }
    ]
