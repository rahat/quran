{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "પોતાના સર્વોચ્ચ પાલનહારના નામની પવિત્રતા બયાન કર"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "જેણે સર્જન કર્યુ અને ઠીક-ઠાક કર્યો"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "અને જેણે (ઠીક-ઠાક) ભાગ્ય બનાવ્યું અને પછી માર્ગ બતાવ્યો"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "અને જેણે તાજી વનસ્પતિઓ ઉપજાવી"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "પછી તેણે તેને (સુકાવીને) કાળો કચરો બનાવી દીધો"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "અમે તમને પઢાવીશુ પછી તમે નહીં ભુલો"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "સિવાય જે કંઇ અલ્લાહ ઇચ્છે, તે જાહેર અને છુપી (વાતોને પણ) જાણે છે"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "અમે તમારા માટે સરળતા પેદા કરી દઇશું"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "તો તમે શિખામણ આપતા રહો, જો શિખામણ લાભદાયક હોય"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "ડરવાવાળો તો શિખામણ ગ્રહણ કરશે"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "(હા) દુર્ભાગી તેનાથી દૂર રહેશે"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "જે મોટી આગમાં જશે"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "ત્યાં ન તો તે મૃત્યુ પામશે ન તો જીવશે. (જાન-કનીની અવસ્થામાં હશે)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "ખરેખર તેણે સફળતા પ્રાપ્ત કરી જે પવિત્ર થઇ ગયો"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "અને જેણે પોતાના પાલનહારના નામનું સ્મરણ કર્યુ, અને નમાઝ પઢતો રહ્યો"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "પરંતુ તમે તો દુનિયાવી જીવનને પ્રાથમિકતા આપો છો"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "અને આખિરત સર્વોત્તમ અને અવિનાશી છે"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "આ વાતો પ્રથમ ગ્રંથોમાં પણ છે"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "(એટલે કે) ઇબ્રાહીમ અને મૂસાના ગ્રંથોમાં"
        }
    ]
}