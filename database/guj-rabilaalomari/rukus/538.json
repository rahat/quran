{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "પઢો પોતાના પાલનહારના નામથી જેણે સર્જન કર્યુ"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "જેણે માનવીનું જામી ગયેલા લોહીથી સર્જન કર્યુ"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "તમે પઢતા રહો તારો પાલનહાર અત્યંત ઉદાર છે"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "જેણે પેન મારફતે (જ્ઞાન) શીખવાડયું"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "જેણે માનવીને તે શીખવાડયું જેને તે ન જાણતો હતો"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "ખરેખર માનવી તો વિદ્રોહી બની રહ્યો છે"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "એટલા માટે કે તે પોતાને બેદરકાર (ખુશહાલ) સમજે છે"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "ખરેખર પાછા ફરવું તારા પાલનહાર તરફ છે"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "તેને પણ તે જોયો જે બંદાને અટકાવે છે"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "જ્યારે કે તે બંદો નમાઝ પઢે છે"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "શું બતાઓ તો, તે સત્ય માર્ગ તરફ હોય"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "અથવા તો સંયમતાનો આદેશ આપતો હોય"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "તમારો શું ખ્યાલ છે, અગર આ જુઠલાવતો હોય અને મોઢું ફેરવતો હોય તો"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "શું તેણે નથી જાણ્યું કે અલ્લાહ તઆલા તેને જોઇ રહ્યો છે"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "કદાપિ નહીં, અગર આ બચતો ન રહ્યો તો અમે તેના કપાળના વાળ પકડીને ખેંચીશું"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "એવુ કપાળ જે જુઠ્ઠુ પાપી છે"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "તે પોતાના ટેકેદારોને બોલાવી લે"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "અમે પણ (જહન્નમના) રખેવાળને બોલાવી લઇશું"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "સાવધાન ! તેની વાત કદાપિ ન માનશો. અને સજદો કરો,અને નિકટ થઇ જાઓ"
        }
    ]
}