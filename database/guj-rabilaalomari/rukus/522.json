{
    "rukus": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "તેણે ભવા ચઢાવ્યા, અને મોં ફેરવી લીધું"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "(એટલા માટે) કે તેની પાસે એક અંધ આવી ગયો"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "તમને શું ખબર કદાચ તે પવિત્રતા પ્રાપ્ત કરતો"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "અથવા શિખામણ સાંભળતો અને તેને શિખામણ લાભ પહોંચાડતી"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "જે લાપરવાહી કરે છે"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "તેની તરફ તો તમે પૂરતુ ધ્યાન આપી રહ્યા છો"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "જો કે તેમના ન સુધારવા થી તમારા પર કોઇ દોષ નથી"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "અને જે વ્યક્તિ તમારી પાસે દોડતો આવે છે"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "અને તે ડરી (પણ) રહ્યો છે"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "તમે તેની તરફ બેધ્યાન છો"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "કદાપિ નહીં, આ કુરઆન તો એક ઉપદેશ છે"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "જે ચાહે તેનાથી શીખ મેળવે"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(આ તો) પ્રતિષ્ઠિત શાસ્ત્રો માં (છે)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "જે ઉચ્ચ કક્ષાની અને પવિત્ર છે"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "એવા લખનારના હાથમાં છે"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "જેઓ આદરણીય અને પ્રામણિક છે"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "અલ્લાહની ફિટકાર માનવી પર, તે કેવો અપકારી છે"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "તેનું અલ્લાહએ કઇ વસ્તુથી સર્જન કર્યુ"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "તેને એક ટીપા વડે, પછી અનુમાન પર રાખ્યો તેને"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "પછી તેના માટે માર્ગ સરળ કર્યો"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "પછી તેને મૃત્યુ આપ્યું, અને પછી કબરમાં દફનાવ્યો"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "પછી જ્યારે ઇચ્છશે તેને જીવિત કરી દેશે"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "કોઇ શંકા નથી. તેણે અત્યાર સુધી અલ્લાહના આદેશનું આજ્ઞાપાલનનથી કર્યુ"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "માનવી પોતાના ભોજન તરફ ધ્યાન ધરે"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "નિ:શંક અમે જ મુશળધાર પાણી વરસાવ્યું"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "પછી અમે જ ધરતીને ચીરી ફાડી"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "પછી અમે જ તેમાં અનાજ ઉગાવ્યું"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "અને દ્રાક્ષ અને શાકભાજીઓ"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "અને જૈતૂન અને ખજુરો"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "અને હર્યા-ભર્યા બગીચાઓ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "અને ફળો તેમજ (ઘાસ) ચારો (પણ) ઉગાવ્યો"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "તમારા અને તમારા પશુઓ ના ફાયદા માટે"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "બસ ! જ્યારે કાન બહેરા કરી નાખનારી (કયામત) આવી જશે"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "તે દિવસે માનવી પોતાના સગાભાઇ થી"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "અને પોતાની માતા તેમજ પિતાથી"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "અને પોતાની પત્નિ તેમજ પુત્રોથી ભાગશે"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "પ્રત્યેક વ્યક્તિને તે દિવસે પોતાની જ પડી હશે"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "તે દિવસે કેટલાય ચહેરા ચમકતા હશે"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "(જે) હસતા તેમજ પ્રફુલ્લિત હશે"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "અને કેટલાય ચહેરાઓ પર તે દિવસે ધૂળ લાગેલી હશે"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "તેમના પર કાળાશ છવાયેલી હશે"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "તેઓ જ જુઠલાવનારા અને દુરાચારી હશે"
        }
    ]
}