{
    "rukus": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "હાંફતા દોડનારા ઘોડાઓના સોગંદ"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "પછી ટાપ મારીને અંગારા ખેરનારાઓના સોગંદ"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "પછી વહેલી સવારે છાપા મારનારના સોગંદ"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "બસ ! તે વખતે ધુળની ડમરીઓ ઉડાવે છે"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "પછી તેની સાથે લશકરના ટોળામાં ઘુસી જાય છે"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "ખરેખર માનવી પોતાના પાલનહાર નો ખુબ જ અપકારી છે"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "અને નિ:સંદેહ તે સ્વયં તેના પર સાક્ષી છે"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "તે માલના મોંહ માં પણ સખત છે"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "શું તેને તે સમય ની ખબર નથી જ્યારે કબરો માં જે (કંઇ) છે, કાઢી લેવામાં આવશે"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "અને હૃદયો ની છુપી વાતો કાઢી નાખવામાં આવશે"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "ચોક્કસપણે તેમનો પાલનહાર તે દિવસે તેમની અવસ્થાથી વાકેફ હશે"
        }
    ]
}