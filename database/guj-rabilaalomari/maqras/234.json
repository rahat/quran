{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "તેણે ભવા ચઢાવ્યા, અને મોં ફેરવી લીધું"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "(એટલા માટે) કે તેની પાસે એક અંધ આવી ગયો"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "તમને શું ખબર કદાચ તે પવિત્રતા પ્રાપ્ત કરતો"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "અથવા શિખામણ સાંભળતો અને તેને શિખામણ લાભ પહોંચાડતી"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "જે લાપરવાહી કરે છે"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "તેની તરફ તો તમે પૂરતુ ધ્યાન આપી રહ્યા છો"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "જો કે તેમના ન સુધારવા થી તમારા પર કોઇ દોષ નથી"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "અને જે વ્યક્તિ તમારી પાસે દોડતો આવે છે"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "અને તે ડરી (પણ) રહ્યો છે"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "તમે તેની તરફ બેધ્યાન છો"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "કદાપિ નહીં, આ કુરઆન તો એક ઉપદેશ છે"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "જે ચાહે તેનાથી શીખ મેળવે"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "(આ તો) પ્રતિષ્ઠિત શાસ્ત્રો માં (છે)"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "જે ઉચ્ચ કક્ષાની અને પવિત્ર છે"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "એવા લખનારના હાથમાં છે"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "જેઓ આદરણીય અને પ્રામણિક છે"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "અલ્લાહની ફિટકાર માનવી પર, તે કેવો અપકારી છે"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "તેનું અલ્લાહએ કઇ વસ્તુથી સર્જન કર્યુ"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "તેને એક ટીપા વડે, પછી અનુમાન પર રાખ્યો તેને"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "પછી તેના માટે માર્ગ સરળ કર્યો"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "પછી તેને મૃત્યુ આપ્યું, અને પછી કબરમાં દફનાવ્યો"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "પછી જ્યારે ઇચ્છશે તેને જીવિત કરી દેશે"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "કોઇ શંકા નથી. તેણે અત્યાર સુધી અલ્લાહના આદેશનું આજ્ઞાપાલનનથી કર્યુ"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "માનવી પોતાના ભોજન તરફ ધ્યાન ધરે"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "નિ:શંક અમે જ મુશળધાર પાણી વરસાવ્યું"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "પછી અમે જ ધરતીને ચીરી ફાડી"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "પછી અમે જ તેમાં અનાજ ઉગાવ્યું"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "અને દ્રાક્ષ અને શાકભાજીઓ"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "અને જૈતૂન અને ખજુરો"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "અને હર્યા-ભર્યા બગીચાઓ"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "અને ફળો તેમજ (ઘાસ) ચારો (પણ) ઉગાવ્યો"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "તમારા અને તમારા પશુઓ ના ફાયદા માટે"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "બસ ! જ્યારે કાન બહેરા કરી નાખનારી (કયામત) આવી જશે"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "તે દિવસે માનવી પોતાના સગાભાઇ થી"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "અને પોતાની માતા તેમજ પિતાથી"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "અને પોતાની પત્નિ તેમજ પુત્રોથી ભાગશે"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "પ્રત્યેક વ્યક્તિને તે દિવસે પોતાની જ પડી હશે"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "તે દિવસે કેટલાય ચહેરા ચમકતા હશે"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "(જે) હસતા તેમજ પ્રફુલ્લિત હશે"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "અને કેટલાય ચહેરાઓ પર તે દિવસે ધૂળ લાગેલી હશે"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "તેમના પર કાળાશ છવાયેલી હશે"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "તેઓ જ જુઠલાવનારા અને દુરાચારી હશે"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "જ્યારે સૂરજ લપેટી દેવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "અને જ્યારે તારાઓ પ્રકાશહીન થઇ જશે"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "અને જ્યારે પર્વતો ચલાવવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "અને જ્યારે દસ મહિનાની ગર્ભવાળી ઉંટણીને છોડી દેવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "અને જ્યારે જંગલી જાનવર ભેગા કરવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "અને જ્યારે દરિયાઓ ભડકાવવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "અને જ્યારે આત્માઓ (શરીરો સાથે) જોડી દેવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "અને જ્યારે જીવતી દાટેલી બાળકીને સવાલ કરવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "કે કયા અપરાધના કારણે મારી નાખવામાં આવી"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "અને જ્યારે કર્મનોંધ ખોલી નાખવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "અને જ્યારે આકાશની ખાલ ખેંચી લેવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "અને જ્યારે જહન્નમ ભડકાવવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "અને જ્યારે જન્નત નજીક લાવવામાં આવશે"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "પ્રત્યેક વ્યક્તિ જાણી લેશે જે તે લઇને આવ્યો છે"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "હું સોગંધ ખાઉ છું પાછળ હટવાવાળા"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "ચાલનાર અને સંતાઇ જનાર તારાઓ ની"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "અને રાતની જ્યારે સમાપ્ત થવા લાગે છે"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "અને સવારની જ્યારે ચમકવા લાગે"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "નિ:શંક આ એક ઇઝઝતવાળા ફરિશ્તાઓ ની લાવેલી વાણી છે"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "જે શક્તિશાળી છે. અર્શવાળા (અલ્લાહ) ને ત્યાં ઉચ્ચ સ્થાનવાળો છે"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "જેની વાત માનવામાં આવે છે. પ્રામાણિક છે"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "અને તમારા સાથી પાગલ નથી"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "તેણે તેને (જિબ્રઇલ) આકાશોના ખુલ્લા કિનારે જોયા પણ છે"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "અને તે છુપી વાતો બતાવવામાં કંજુસ પણ નથી"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "અને આ કુરઆન ધિક્કારેલા શયતાનનું કથન નથી"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "પછી તમે ક્યાં જઇ રહ્યા છો"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "આ જગત વાસીઓ માટે એક સ્મૃતિબોધ છે"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "(ખાસ કરીને) તેમના માટે જે સીધો માર્ગ અપનાવવા માગે છે"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "અને તમે નથી ઇચ્છી શકતા જ્યાં સુધી સમ્રગ સૃષ્ટિનો પાલનહાર નથી ઇચ્છતો"
        }
    ]
}