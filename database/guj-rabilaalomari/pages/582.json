{
    "pages": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "તેઓ કયા વિષય બાબત પૂછતાછ કરી રહ્યા છે"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "તે મોટી સુચના બાબત વિશે"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "જેના વિશે તેઓ મતભેદ કરી રહ્યા છે"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "ચોક્કસપણે તેઓ નજીકમાં જાણી લેશે"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "ફરી ચોક્કસપણે તેઓ નજીકમાં જાણી લેશે"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "શું અમે ધરતીને પાથરણું નથી બનાવ્યું"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "અને પર્વતોને ખુંટા (નથી બનાવ્યા)"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "અને અમે તમને જોડકામાં પેદા કર્યા"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "અને અમે તમારી નિદ્રાને તમારા આરામ માટે જ બનાવી"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "અને રાતને અમે પરદો બનાવ્યો છે"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "અને દિવસને કમાણી માટે બનાવ્યો"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "અને અમે તમારા ઉપર સાત મજબુત આકાશ બનાવ્યા"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "અને એક ચમકતો દીવો (સૂર્ય) બનાવ્યો"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "અને વાદળોમાં થી મુશળધાર વરસાદ વરસાવ્યો"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "જેથી તેનાથી અનાજ અને વનસ્પતિ ઉપજાવે"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "અને હર્યા-ભર્યા બાગ. ( પણ ઉપજાવે)"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "નિ:શંક ફેસલાનો દિવસ નિશ્ર્ચિત છે"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "જે દિવસે સૂરમાં ફુકવામાં આવશે, પછી તમે જુથ ના જુથ ચાલી આવશો"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "અને આકાશ ખોલી નાખવામાં આવશે . તેમાં દ્વાર જ દ્વાર થઇ જશે"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "અને પર્વતને ચલાવવામાં આવશે, તો તે મરીચિકા બનીને રહી જશે"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "નિ:શંક દોઝખ ઘાતમાં છે"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "દુરાચારીઓ નું ઠેકાણુ તે જ છે"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "જેમાં તેઓ અગણિત વર્ષો સુધી પડ્યા રહેશે"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "ન તેમાં ઠંડી તથા પીણું ચાખશે"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "સિવાય ગરમ પાણી અને (વહેતુ) પરૂ"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "(તેમને) સંપૂર્ણ બદલો મળશે"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "નિ:શંક તેઓ હિસાબની આશા જ નહતા રાખતા"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "અને બેબાકીથી અમારી આયતોને જુઠલાવતા હતા"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "અને અમે દરેક વસ્તુને ગણી ગણીને લખી રાખી છે"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "હવે, તમે (પોતાની કરણીની) મજા ચાખો"
        }
    ]
}