{
    "pages": [
        {
            "chapter": 56,
            "verse": 17,
            "text": "તેઓ પાસે એવા બાળકો હશે જેઓ હંમેશા (બાળકો જ) રહેશે. આવ-જા કરતા હશે"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "પ્યાલા, જગ અને એવું જામ લઇને જે વહેતી"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "જેનાથી ન તો માથામાં દુખાવો થશે, ન તો બુધ્ધિ નિષ્ક્રિય થશે"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "અને એવા ફળો લઇને જે તેઓને મનગમતા હશે"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "અને પંખીઓના ગોશ્ત જે તેઓને પસંદ હશે"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "અને મોટી મોટી આંખોવાળી અપ્સરાઓ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "જે છૂપાયેલા મોતીઓ જેવી હશે"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "આ બદલો છે તેમના કર્મોનો"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "ન ત્યાં ફાલતું વાત સાંભળશે અને ન તો પાપની વાત"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "ફકત સલામ જ સલામની અવાજ હશે"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "અને જમણા હાથવાળા કેટલા ઉત્તમ છે. જમણા હાથવાળાઓ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "તેઓ કાંટા વગર"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "અને એક પછી એક ખૂંટા"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "અને લાંબા લાંબા પડછાયા"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "અને વહેતા પાણી"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "અને ઘણા જ ફળોમાં"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "જે ન તો ખત્મ થશે, ન તો રોકી લેવામાં આવશે"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "અને ઊંચા ઊંચા પાથરણા પર હશે"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "અમે તેઓ (ની પત્નીઓને) ખાસ તરીકાથી બનાવી છે"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "અને અમે તેણીઓને કુમારીકાઓ બનાવી દીધી છે"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "મોહબ્બત કરનારી અને સરખી વયો વાળી"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "જમણા હાથવાળાઓ માટે છે"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "ઘણા લોકો આગળ રહેવાવાળા લોકો માંથી હશે"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "અને ઘણું જ મોટું જૂથ પાછળ રહેવાવાળાઓનું છે"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "અને ડાબા હાથવાળા, કેવા છે ડાબા હાથવાળા"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "ગરમ હવા અને ગરમ પાણી માં (હશે)"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "અને કાળા ધુમાડાના પડછાયામાં"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "જે ન તો ઠંડો હશે અને ન તો ખુશ કરનારો"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "નિ:શંક આ લોકો આ પહેલા ઘણા જ ઠાઠમાં હતા"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "અને મોટા મોટા ગુનાહ પર અડગ રહેતા"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "અને કહેતા હતા શું અમે મૃત્યુ પામીશું, માટી અને હાડકા થઇ જઇશું તો શું અમે પાછા બીજીવાર જીવિત કરવામાં આવીશું"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "અને શું અમારા આગળના બાપ-દાદાઓ પણ"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "તમે કહી દો કે નિ:શંક આગળ અને પાછળના સૌને"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "જરૂરથી ભેગા કરી દેવામાં આવશે, એક નક્કી કરેલ દિવસે"
        }
    ]
}