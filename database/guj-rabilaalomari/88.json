{
    "chapter": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "શું તમને પણ ઢાંકી દેનારી (કયામત) ની વાત પહોંચી છે"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "તે દિવસે કેટલાય ચહેરા અપમાનિત હશે"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "(અને) પરિશ્રમ કરનારા થાકેલા હશે"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "તેઓ ધગધગતી આગમાં જશે"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "અતિશય ઉકળતા ઝરણાનું પાણી તેઓને પીવડાવવામાં આવશે"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "તેમના માટે કાંટાવાળા સુકા ઘાસ સિવાય કંઇ ખાંણુ નહીં હોય"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "જે ન હૃષ્ટપૃષ્ટ કરશે અને ન ભુખ દૂર કરશે"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "કેટલાય ચહેરા તે દિવસે તાજગીભર્યા અને (ખુશહાલ) હશે"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "પોતાના પ્રયત્નોથી ખુશ હશે"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "ઉચ્ચશ્રેણી ની જન્નતમાં હશે"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "તેમાં કોઇ બકવાસ નહી સાંભળે"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "તેમાં એક વહેતુ ઝરણું હશે"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "(અને) તેમાં ઊંચા-ઊંચા આસન હશે"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "તેમાં પ્યાલા મુકેલા (હશે)"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "અને એક કતારમાં લાગેલા તકીયા હશે"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "અને મખમલી જાજમો ફેલાયેલી હશે"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "શું તેઓ ઊંટોને નથી જોઇ રહ્યા કે તે કઇ રીતે પેદા કરવામાં આવ્યા છે"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "અને આકાશને કે કઇ રીતે ઊંચુ કરવામાં આવ્યું છે"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "અને પર્વતો તરફ તે કઇ રીતે ખોડી દેવામાં આવ્યા છે"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "અને ધરતી તરફ કે કઇ રીતે પાથરવામાં આવી છે"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "બસ તમે શિખામણ આપતા રહો. (કારણકે) તમે ફકત શિખામણ આપનારા છો"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "તમે તેમના ઉપર રખેવાળ નથી"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "હા ! જે વ્યક્તિ મોઢું ફેરવશે અને ઇન્કાર કરશે"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "તેને અલ્લાહ તઆલા ભારે સજા આપશે"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "ચોક્કસપણે અમારા તરફ જ તેમને પાછા ફરવાનું છે"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "પછી ચોક્કસપણે અમારા શિરે છે, તેમનો હિસાબ લેવો"
        }
    ]
}