{
    "maqras": [
        {
            "chapter": 38,
            "verse": 52,
            "text": "ve`indehum kasiratu-ttarfi etrab"
        },
        {
            "chapter": 38,
            "verse": 53,
            "text": "haza ma tu`adune liyevmi-lhisab"
        },
        {
            "chapter": 38,
            "verse": 54,
            "text": "inne haza lerizkuna ma lehu min nefad"
        },
        {
            "chapter": 38,
            "verse": 55,
            "text": "haza. veinne littagine leserra meab"
        },
        {
            "chapter": 38,
            "verse": 56,
            "text": "cehennem. yaslevneha. febi'se-lmihad"
        },
        {
            "chapter": 38,
            "verse": 57,
            "text": "haza felyezukuhu hamimuv vegassak"
        },
        {
            "chapter": 38,
            "verse": 58,
            "text": "veaharu min seklihi ezvac"
        },
        {
            "chapter": 38,
            "verse": 59,
            "text": "haza fevcum muktehimum me`akum. la merhabem bihim. innehum salu-nnar"
        },
        {
            "chapter": 38,
            "verse": 60,
            "text": "kalu bel entum. la merhabem bikum. entum kaddemtumuhu lena. febi'se-lkarar"
        },
        {
            "chapter": 38,
            "verse": 61,
            "text": "kalu rabbena men kaddeme lena haza fezidhu `azaben di`fen fi-nnar"
        },
        {
            "chapter": 38,
            "verse": 62,
            "text": "vekalu ma lena la nera ricalen kunna ne`udduhum mine-l'esrar"
        },
        {
            "chapter": 38,
            "verse": 63,
            "text": "ettehaznahum sihriyyen em zagat `anhumu-l'ebsar"
        },
        {
            "chapter": 38,
            "verse": 64,
            "text": "inne zalike lehakkun tehasumu ehli-nnar"
        },
        {
            "chapter": 38,
            "verse": 65,
            "text": "kul innema ene munzir. vema min ilahin ille-llahu-lvahidu-lkahhar"
        },
        {
            "chapter": 38,
            "verse": 66,
            "text": "rabbu-ssemavati vel'ardi vema beynehume-l`azizu-lgaffar"
        },
        {
            "chapter": 38,
            "verse": 67,
            "text": "kul huve nebeun `azim"
        },
        {
            "chapter": 38,
            "verse": 68,
            "text": "entum `anhu mu`ridun"
        },
        {
            "chapter": 38,
            "verse": 69,
            "text": "ma kane liye min `ilmim bilmelei-l'a`la iz yahtesimun"
        },
        {
            "chapter": 38,
            "verse": 70,
            "text": "iy yuha ileyye illa ennema ene nezirum mubin"
        },
        {
            "chapter": 38,
            "verse": 71,
            "text": "iz kale rabbuke lilmelaiketi inni halikum beseram min tin"
        },
        {
            "chapter": 38,
            "verse": 72,
            "text": "feiza sevveytuhu venefahtu fihi mir ruhi feka`u lehu sacidin"
        },
        {
            "chapter": 38,
            "verse": 73,
            "text": "fesecede-lmelaiketu kulluhum ecme`un"
        },
        {
            "chapter": 38,
            "verse": 74,
            "text": "illa iblis. istekbera vekane mine-lkafirin"
        },
        {
            "chapter": 38,
            "verse": 75,
            "text": "kale ya iblisu ma mene`ake en tescude lima halaktu biyedeyy. estekberte em kunte mine-l`alin"
        },
        {
            "chapter": 38,
            "verse": 76,
            "text": "kale ene hayrum minh. halakteni min nariv vehalaktehu min tin"
        },
        {
            "chapter": 38,
            "verse": 77,
            "text": "kale fahruc minha feinneke racim"
        },
        {
            "chapter": 38,
            "verse": 78,
            "text": "veinne `aleyke la`neti ila yevmi-ddin"
        },
        {
            "chapter": 38,
            "verse": 79,
            "text": "kale rabbi feenzirni ila yevmi yub`asun"
        },
        {
            "chapter": 38,
            "verse": 80,
            "text": "kale feinneke mine-lmunzarin"
        },
        {
            "chapter": 38,
            "verse": 81,
            "text": "ila yevmi-lvakti-lma`lum"
        },
        {
            "chapter": 38,
            "verse": 82,
            "text": "kale febi`izzetike leugviyennehum ecme`in"
        },
        {
            "chapter": 38,
            "verse": 83,
            "text": "illa `ibadeke minhumu-lmuhlesin"
        },
        {
            "chapter": 38,
            "verse": 84,
            "text": "kale felhakk. velhakka ekul"
        },
        {
            "chapter": 38,
            "verse": 85,
            "text": "leemleenne cehenneme minke vemimmen tebi`ake minhum ecme`in"
        },
        {
            "chapter": 38,
            "verse": 86,
            "text": "kul ma es'elukum `aleyhi min ecriv vema ene mine-lmutekellifin"
        },
        {
            "chapter": 38,
            "verse": 87,
            "text": "in huve illa zikrul lil`alemin"
        },
        {
            "chapter": 38,
            "verse": 88,
            "text": "veleta`lemunne nebeehu ba`de hin"
        },
        {
            "chapter": 39,
            "verse": 1,
            "text": "tenzilu-lkitabi mine-llahi-l`azizi-lhakim"
        },
        {
            "chapter": 39,
            "verse": 2,
            "text": "inna enzelna ileyke-lkitabe bilhakki fa`budi-llahe muhlisal lehu-ddin"
        },
        {
            "chapter": 39,
            "verse": 3,
            "text": "ela lillahi-ddinu-lhalis. vellezine-ttehazu min dunihi evliya'. ma na`buduhum illa liyukarribuna ile-llahi zulfa. inne-llahe yahkumu beynehum fi ma hum fihi yahtelifun. inne-llahe la yehdi men huve kazibun keffar"
        },
        {
            "chapter": 39,
            "verse": 4,
            "text": "lev erade-llahu ey yettehize veledel lastafa mimma yahluku ma yesau subhaneh. huve-llahu-lvahidu-lkahhar"
        },
        {
            "chapter": 39,
            "verse": 5,
            "text": "haleka-ssemavati vel'arda bilhakk. yukevviru-lleyle `ale-nnehari veyukevviru-nnehara `ale-lleyli vesehhara-ssemse velkamer. kulluy yecri liecelim musemma. ela huve-l`azizu-lgaffar"
        },
        {
            "chapter": 39,
            "verse": 6,
            "text": "halekakum min nefsiv vahidetin summe ce`ale minha zevceha veenzele lekum mine-l'en`ami semaniyete ezvac. yahlukukum fi butuni ummehatikum halkam mim ba`di halkin fi zulumatin selas. zalikumu-llahu rabbukum lehu-lmulk. la ilahe illa hu. feenna tusrafun"
        },
        {
            "chapter": 39,
            "verse": 7,
            "text": "in tekfuru feinne-llahe ganiyyun `ankum vela yerda li`ibadihi-lkufr. vein teskuru yerdahu lekum. vela teziru vaziratuv vizra uhra. summe ila rabbikum merci`ukum feyunebbiukum bima kuntum ta`melun. innehu `alimum bizati-ssudur"
        }
    ]
}