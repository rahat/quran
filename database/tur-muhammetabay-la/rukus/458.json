{
    "rukus": [
        {
            "chapter": 52,
            "verse": 1,
            "text": "vettur"
        },
        {
            "chapter": 52,
            "verse": 2,
            "text": "vekitabim mestur"
        },
        {
            "chapter": 52,
            "verse": 3,
            "text": "fi rakkim mensur"
        },
        {
            "chapter": 52,
            "verse": 4,
            "text": "velbeyti-lma`mur"
        },
        {
            "chapter": 52,
            "verse": 5,
            "text": "vessakfi-lmerfu"
        },
        {
            "chapter": 52,
            "verse": 6,
            "text": "velbahri-lmescur"
        },
        {
            "chapter": 52,
            "verse": 7,
            "text": "inne `azabe rabbike levaki"
        },
        {
            "chapter": 52,
            "verse": 8,
            "text": "ma lehu min dafi"
        },
        {
            "chapter": 52,
            "verse": 9,
            "text": "yevme temuru-ssemau mevra"
        },
        {
            "chapter": 52,
            "verse": 10,
            "text": "vetesiru-lcibalu seyra"
        },
        {
            "chapter": 52,
            "verse": 11,
            "text": "feveyluy yevmeizil lilmukezzibin"
        },
        {
            "chapter": 52,
            "verse": 12,
            "text": "ellezine hum fi havdiy yel`abun"
        },
        {
            "chapter": 52,
            "verse": 13,
            "text": "yevme yude``une ila nari cehenneme da``a"
        },
        {
            "chapter": 52,
            "verse": 14,
            "text": "hazihi-nnaru-lleti kuntum biha tukezzibun"
        },
        {
            "chapter": 52,
            "verse": 15,
            "text": "efesihrun haza em entum la tubsirun"
        },
        {
            "chapter": 52,
            "verse": 16,
            "text": "islevha fasbiru ev la tasbiru. sevaun `aleykum. innema tuczevne ma kuntum ta`melun"
        },
        {
            "chapter": 52,
            "verse": 17,
            "text": "inne-lmuttekine fi cennativ vene`im"
        },
        {
            "chapter": 52,
            "verse": 18,
            "text": "fakihine bima atahum rabbuhum. vevekahum rabbuhum `azabe-lcehim"
        },
        {
            "chapter": 52,
            "verse": 19,
            "text": "kulu vesrabu heniem bima kuntum ta`melun"
        },
        {
            "chapter": 52,
            "verse": 20,
            "text": "muttekiine `ala sururim masfufeh. vezevvecnahum bihurin `in"
        },
        {
            "chapter": 52,
            "verse": 21,
            "text": "vellezine amenu vettebe`athum zurriyyetuhum biimanin elhakna bihim zurriyyetehum vema eletnahum min `amelihim min sey'. kullu-mriim bima kesebe rahin"
        },
        {
            "chapter": 52,
            "verse": 22,
            "text": "veemdednahum bifakihetiv velahmim mimma yestehun"
        },
        {
            "chapter": 52,
            "verse": 23,
            "text": "yetenaza`une fiha ke'sel la lagvun fiha vela te'sim"
        },
        {
            "chapter": 52,
            "verse": 24,
            "text": "veyetufu `aleyhim gilmanul lehum keennehum lu'luum meknun"
        },
        {
            "chapter": 52,
            "verse": 25,
            "text": "veakbele ba`duhum `ala ba`diy yetesaelun"
        },
        {
            "chapter": 52,
            "verse": 26,
            "text": "kalu inna kunna kablu fi ehlina musfikin"
        },
        {
            "chapter": 52,
            "verse": 27,
            "text": "femenne-llahu `aleyna vevekana `azabe-ssemum"
        },
        {
            "chapter": 52,
            "verse": 28,
            "text": "inna kunna min kablu ned`uh. innehu huve-lberru-rrahim"
        }
    ]
}