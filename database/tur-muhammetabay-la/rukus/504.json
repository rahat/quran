{
    "rukus": [
        {
            "chapter": 71,
            "verse": 1,
            "text": "inna erselna nuhan ila kavmihi en enzir kavmeke min kabli ey ye'tiyehum `azabun elim"
        },
        {
            "chapter": 71,
            "verse": 2,
            "text": "kale ya kavmi inni lekum nezirum mubin"
        },
        {
            "chapter": 71,
            "verse": 3,
            "text": "eni-`budu-llahe vettekuhu veeti`un"
        },
        {
            "chapter": 71,
            "verse": 4,
            "text": "yagfir lekum min zunubikum veyuehhirkum ila ecelim musemma. inne ecele-llahi iza cae la yu'ehhar. lev kuntum ta`lemun"
        },
        {
            "chapter": 71,
            "verse": 5,
            "text": "kale rabbi inni de`avtu kavmi leylev venehara"
        },
        {
            "chapter": 71,
            "verse": 6,
            "text": "felem yezidhum du`ai illa firara"
        },
        {
            "chapter": 71,
            "verse": 7,
            "text": "veinni kullema de`avtuhum litagfira lehum ce`alu esabi`ahum fi azanihim vestagsev siyabehum veesarru vestekberu-stikbara"
        },
        {
            "chapter": 71,
            "verse": 8,
            "text": "summe inni de`avtuhum cihara"
        },
        {
            "chapter": 71,
            "verse": 9,
            "text": "summe inni a`lentu lehum veesrartu lehum israra"
        },
        {
            "chapter": 71,
            "verse": 10,
            "text": "fekultu-stagfiru rabbekum innehu kane gaffara"
        },
        {
            "chapter": 71,
            "verse": 11,
            "text": "yursili-ssemae `aleykum midrara"
        },
        {
            "chapter": 71,
            "verse": 12,
            "text": "veyumdidkum biemvaliv vebenine veyec`al lekum cennativ veyec`al lekum enhara"
        },
        {
            "chapter": 71,
            "verse": 13,
            "text": "ma lekum la tercune lillahi vekara"
        },
        {
            "chapter": 71,
            "verse": 14,
            "text": "vekad halekakum atvara"
        },
        {
            "chapter": 71,
            "verse": 15,
            "text": "elem terav keyfe haleka-llahu seb`a semavatin tibaka"
        },
        {
            "chapter": 71,
            "verse": 16,
            "text": "vece`ale-lkamera fihinne nurav vece`ale-ssemse siraca"
        },
        {
            "chapter": 71,
            "verse": 17,
            "text": "vellahu embetekum mine-l'ardi nebata"
        },
        {
            "chapter": 71,
            "verse": 18,
            "text": "summe yu`idukum fiha veyuhricukum ihraca"
        },
        {
            "chapter": 71,
            "verse": 19,
            "text": "vellahu ce`ale lekumu-l'arda bisata"
        },
        {
            "chapter": 71,
            "verse": 20,
            "text": "litesluku minha subulen ficaca"
        }
    ]
}