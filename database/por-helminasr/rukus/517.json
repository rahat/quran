{
    "rukus": [
        {
            "chapter": 77,
            "verse": 41,
            "text": "Por certo, os piedosos estarão entre sombras e fontes"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "E frutas de quanto apetecerem"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "Dir-se-lhes-á: \"Comei e bebei com deleite, pelo que fazíeis"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Por certo, assim recompensamos os benfeitores"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Ó íncréus, comei e gozai um pouco, por certo, sois criminosos"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "E, quando se lhes diz: \"Curvai-vos\", não se curvam"
        },
        {
            "chapter": 77,
            "verse": 49,
            "text": "Nesse dia, ai dos desmentidores"
        },
        {
            "chapter": 77,
            "verse": 50,
            "text": "Então, em que Mensagem, depois dele crerão"
        }
    ]
}