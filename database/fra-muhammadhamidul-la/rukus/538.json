{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Lis, au nom de ton Seigneur qui a cree"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "qui a cree l'homme d'une adherence"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Lis! Ton Seigneur est le Tres Noble"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "qui a enseigne par la plume [le calame]"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "a enseigne a l'homme ce qu'il ne savait pas"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Prenez-garde! Vraiment l'homme devient rebelle"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "des qu'il estime qu'il peut se suffire a lui-meme (a cause de sa richesse)"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Mais, c'est vers ton Seigneur qu'est le retour"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "As-tu vu celui qui interdit"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "a un serviteur d'Allah [Muhammad] de celebrer la Salat"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Vois-tu s'il est sur la bonne voie"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ou s'il ordonne la piete"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Vois-tu s'il dement et tourne le dos"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Ne sait-il pas que vraiment Allah voit"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Mais non! S'il ne cesse pas, Nous le saisirons certes, par le toupet"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "le toupet d'un menteur, d'un pecheur"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Qu'il appelle donc son assemblee"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Nous appellerons les gardiens [de l'Enfer]"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Non! Ne lui obeis pas; mais prosterne-toi et rapproche-toi"
        }
    ]
}