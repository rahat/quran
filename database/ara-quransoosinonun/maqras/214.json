{
    "maqras": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "إِذَا وَقَعَتِ اِ۬لۡوَاقِعَةُ"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "لَيۡسَ لِوَقۡعَتِهَا كَاذِبَةٌ"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "خَافِضَةٞ رَّافِعَةٌ"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "إِذَا رُجَّتِ اِ۬لۡأَرۡضُ رَجّٗا"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "وَبُسَّتِ اِ۬لۡجِبَالُ بَسّٗا"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "فَكَانَتۡ هَبَآءٗ مُّنۢبَثّٗا"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "وَكُنتُمۡ أَزۡوَٰجٗا ثَلَٰثَةٗ"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "فَأَصۡحَٰبُ اُ۬لۡمَيۡمَنَةِ مَا أَصۡحَٰبُ اُ۬لۡمَيۡمَنَةِ"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "وَأَصۡحَٰبُ اُ۬لۡمَشۡـَٔمَةِ مَا أَصۡحَٰبُ اُ۬لۡمَشۡـَٔمَةِ"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "وَاَلسَّٰبِقُونَ اَ۬لسَّٰبِقُونَ"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "أُوْلَٰٓئِكَ اَ۬لۡمُقَرَّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "فِي جَنَّٰتِ اِ۬لنَّعِيمِ"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "ثُلَّةٞ مِّنَ اَ۬لۡأَوَّلِينَ"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "وَقَلِيلٞ مِّنَ اَ۬لۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "عَلَىٰ سُرُرٖ مَّوۡضُونَةٖ"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "مُّتَّكِـِٔينَ عَلَيۡهَا مُتَقَٰبِلِينَ"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "يَطُوفُ عَلَيۡهِمۡ وِلۡدَٰنٞ مُّخَلَّدُونَ"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "بِأَكۡوَابٖ وَأَبَارِيقَ وَكَاسٖ مِّن مَّعِينٖ"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "لَّا يُصَدَّعُونَ عَنۡهَا وَلَا يُنزَفُونَ"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "وَفَٰكِهَةٖ مِّمَّا يَتَخَيَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "وَلَحۡمِ طَيۡرٖ مِّمَّا يَشۡتَهُونَ"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "وَحُورٌ عِينٞ"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "كَأَمۡثَٰلِ اِ۬للُّولُوِٕ اِ۬لۡمَكۡنُونِ"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "جَزَآءَۢ بِمَا كَانُواْ يَعۡمَلُونَ"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "لَا يَسۡمَعُونَ فِيهَا لَغۡوٗا وَلَا تَاثِيمًا"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "إِلَّا قِيلٗا سَلَٰمٗا سَلَٰمٗا"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "وَأَصۡحَٰبُ اُ۬لۡيَمِينِ مَا أَصۡحَٰبُ اُ۬لۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "فِي سِدۡرٖ مَّخۡضُودٖ"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "وَطَلۡحٖ مَّنضُودٖ"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "وَظِلّٖ مَّمۡدُودٖ"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "وَمَآءٖ مَّسۡكُوبٖ"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "وَفَٰكِهَةٖ كَثِيرَةٖ"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "لَّا مَقۡطُوعَةٖ وَلَا مَمۡنُوعَةٖ"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "وَفُرُشٖ مَّرۡفُوعَةٍ"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "إِنَّا أَنشَانَٰهُنَّ إِنشَآءٗ"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "فَجَعَلۡنَٰهُنَّ أَبۡكَارًا"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "عُرُبًا أَتۡرَابٗا"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "لِّأَصۡحَٰبِ اِ۬لۡيَمِينِ"
        },
        {
            "chapter": 56,
            "verse": 39,
            "text": "۞ثُلَّةٞ مِّنَ اَ۬لۡأَوَّلِينَ"
        },
        {
            "chapter": 56,
            "verse": 40,
            "text": "وَثُلَّةٞ مِّنَ اَ۬لۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 41,
            "text": "وَأَصۡحَٰبُ اُ۬لشِّمَالِ مَا أَصۡحَٰبُ اُ۬لشِّمَالِ"
        },
        {
            "chapter": 56,
            "verse": 42,
            "text": "فِي سَمُومٖ وَحَمِيمٖ"
        },
        {
            "chapter": 56,
            "verse": 43,
            "text": "وَظِلّٖ مِّن يَحۡمُومٖ"
        },
        {
            "chapter": 56,
            "verse": 44,
            "text": "لَّا بَارِدٖ وَلَا كَرِيمٍ"
        },
        {
            "chapter": 56,
            "verse": 45,
            "text": "إِنَّهُمۡ كَانُواْ قَبۡلَ ذَٰلِكَ مُتۡرَفِينَ"
        },
        {
            "chapter": 56,
            "verse": 46,
            "text": "وَكَانُواْ يُصِرُّونَ عَلَى اَ۬لۡحِنثِ اِ۬لۡعَظِيمِ"
        },
        {
            "chapter": 56,
            "verse": 47,
            "text": "وَكَانُواْ يَقُولُونَ أَٰى۪ذَا مُتۡنَا وَكُنَّا تُرَابٗا وَعِظَٰمًا أَٰ۟نَّا لَمَبۡعُوثُونَ"
        },
        {
            "chapter": 56,
            "verse": 48,
            "text": "أَوَ ءَابَآؤُنَا اَ۬لۡأَوَّلُونَ"
        },
        {
            "chapter": 56,
            "verse": 49,
            "text": "قُلۡ إِنَّ اَ۬لۡأَوَّلِينَ وَاَلۡأٓخِرِينَ"
        },
        {
            "chapter": 56,
            "verse": 50,
            "text": "لَمَجۡمُوعُونَ إِلَىٰ مِيقَٰتِ يَوۡمٖ مَّعۡلُومٖ"
        },
        {
            "chapter": 56,
            "verse": 51,
            "text": "ثُمَّ إِنَّكُمۡ أَيُّهَا اَ۬لضَّآلُّونَ اَ۬لۡمُكَذِّبُونَ"
        },
        {
            "chapter": 56,
            "verse": 52,
            "text": "لَأٓكِلُونَ مِن شَجَرٖ مِّن زَقُّومٖ"
        },
        {
            "chapter": 56,
            "verse": 53,
            "text": "فَمَالِـُٔونَ مِنۡهَا اَ۬لۡبُطُونَ"
        },
        {
            "chapter": 56,
            "verse": 54,
            "text": "فَشَٰرِبُونَ عَلَيۡهِ مِنَ اَ۬لۡحَمِيمِ"
        },
        {
            "chapter": 56,
            "verse": 55,
            "text": "فَشَٰرِبُونَ شَرۡبَ اَ۬لۡهِيمِ"
        },
        {
            "chapter": 56,
            "verse": 56,
            "text": "هَٰذَا نُزُلُهُمۡ يَوۡمَ اَ۬لدِّين"
        },
        {
            "chapter": 56,
            "verse": 57,
            "text": "نَّحۡنُ خَلَقۡنَٰكُمۡ فَلَوۡلَا تُصَدِّقُونَ"
        },
        {
            "chapter": 56,
            "verse": 58,
            "text": "أَفَرَءَيۡتُم مَّا تُمۡنُونَ"
        },
        {
            "chapter": 56,
            "verse": 59,
            "text": "ءَٰا۬نتُمۡ تَخۡلُقُونَهُۥ أَمۡ نَحۡنُ اُ۬لۡخَٰلِقُون"
        },
        {
            "chapter": 56,
            "verse": 60,
            "text": "نَّحۡنُ قَدَّرۡنَا بَيۡنَكُمُ اُ۬لۡمَوۡتَ وَمَا نَحۡنُ بِمَسۡبُوقِينَ"
        },
        {
            "chapter": 56,
            "verse": 61,
            "text": "عَلَىٰ أَن نُّبَدِّلَ أَمۡثَٰلَكُمۡ وَنُنشِئَكُمۡ فِي مَا لَا تَعۡلَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 62,
            "text": "وَلَقَدۡ عَلِمۡتُمُ اُ۬لنَّشَآءَةَ اَ۬لۡأُولۭيٰ فَلَوۡلَا تَذَّكَّرُونَ"
        },
        {
            "chapter": 56,
            "verse": 63,
            "text": "أَفَرَءَيۡتُم مَّا تَحۡرُثُونَ"
        },
        {
            "chapter": 56,
            "verse": 64,
            "text": "ءَٰا۬نتُمۡ تَزۡرَعُونَهُۥ أَمۡ نَحۡنُ اُ۬لزَّٰرِعُونَ"
        },
        {
            "chapter": 56,
            "verse": 65,
            "text": "لَوۡ نَشَآءُ لَجَعَلۡنَٰهُ حُطَٰمٗا فَظَلۡتُمۡ تَفَكَّهُونَ"
        },
        {
            "chapter": 56,
            "verse": 66,
            "text": "إِنَّا لَمُغۡرَمُونَ"
        },
        {
            "chapter": 56,
            "verse": 67,
            "text": "بَلۡ نَحۡنُ مَحۡرُومُونَ"
        },
        {
            "chapter": 56,
            "verse": 68,
            "text": "أَفَرَءَيۡتُمُ اُ۬لۡمَآءَ اَ۬لَّذِي تَشۡرَبُونَ"
        },
        {
            "chapter": 56,
            "verse": 69,
            "text": "ءَٰا۬نتُمۡ أَنزَلۡتُمُوهُ مِنَ اَ۬لۡمُزۡنِ أَمۡ نَحۡنُ اُ۬لۡمُنزِلُونَ"
        },
        {
            "chapter": 56,
            "verse": 70,
            "text": "لَوۡ نَشَآءُ جَعَلۡنَٰهُ أُجَاجٗا فَلَوۡلَا تَشۡكُرُونَ"
        },
        {
            "chapter": 56,
            "verse": 71,
            "text": "أَفَرَءَيۡتُمُ اُ۬لنَّارَ اَ۬لَّتِي تُورُونَ"
        },
        {
            "chapter": 56,
            "verse": 72,
            "text": "ءَٰا۬نتُمۡ أَنشَاتُمۡ شَجَرَتَهَا أَمۡ نَحۡنُ اُ۬لۡمُنشِـُٔون"
        },
        {
            "chapter": 56,
            "verse": 73,
            "text": "نَّحۡنُ جَعَلۡنَٰهَا تَذۡكِرَةٗ وَمَتَٰعٗا لِّلۡمُقۡوِينَ"
        },
        {
            "chapter": 56,
            "verse": 74,
            "text": "فَسَبِّحۡ بِاسۡمِ رَبِّكَ اَ۬لۡعَظِيمِ"
        }
    ]
}