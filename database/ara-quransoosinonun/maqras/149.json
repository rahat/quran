{
    "maqras": [
        {
            "chapter": 26,
            "verse": 111,
            "text": "۞قَالُواْ أَنُومِن لَّكَ وَاَتَّبَعَكَ اَ۬لۡأَرۡذَلُونَ"
        },
        {
            "chapter": 26,
            "verse": 112,
            "text": "قَالَ وَمَا عِلۡمِي بِمَا كَانُواْ يَعۡمَلُونَ"
        },
        {
            "chapter": 26,
            "verse": 113,
            "text": "إِنۡ حِسَابُهُمۡ إِلَّا عَلَىٰ رَبِّيۖ لَوۡ تَشۡعُرُونَ"
        },
        {
            "chapter": 26,
            "verse": 114,
            "text": "وَمَا أَنَا۠ بِطَارِدِ اِ۬لۡمُومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 115,
            "text": "إِنۡ أَنَا۠ إِلَّا نَذِيرٞ مُّبِينٞ"
        },
        {
            "chapter": 26,
            "verse": 116,
            "text": "قَالُواْ لَئِن لَّمۡ تَنتَهِ يَٰنُوحُ لَتَكُونَنَّ مِنَ اَ۬لۡمَرۡجُومِينَ"
        },
        {
            "chapter": 26,
            "verse": 117,
            "text": "قَال رَّبِّ إِنَّ قَوۡمِي كَذَّبُونِ"
        },
        {
            "chapter": 26,
            "verse": 118,
            "text": "فَاَفۡتَحۡ بَيۡنِي وَبَيۡنَهُمۡ فَتۡحٗا وَنَجِّنِي وَمَن مَّعِي مِنَ اَ۬لۡمُومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 119,
            "text": "فَأَنجَيۡنَٰهُ وَمَن مَّعَهُۥ فِي اِ۬لۡفُلۡكِ اِ۬لۡمَشۡحُونِ"
        },
        {
            "chapter": 26,
            "verse": 120,
            "text": "ثُمَّ أَغۡرَقۡنَا بَعۡدُ اُ۬لۡبَاقِينَ"
        },
        {
            "chapter": 26,
            "verse": 121,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَةٗۖ وَمَا كَانَ أَكۡثَرُهُم مُّومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 122,
            "text": "وَإِنَّ رَبَّكَ لَهۡوَ اَ۬لۡعَزِيزُ اُ۬لرَّحِيمُ"
        },
        {
            "chapter": 26,
            "verse": 123,
            "text": "كَذَّبَتۡ عَادٌ اِ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 26,
            "verse": 124,
            "text": "إِذۡ قَال لَّهُمۡ أَخُوهُمۡ هُودٌ أَلَا تَتَّقُونَ"
        },
        {
            "chapter": 26,
            "verse": 125,
            "text": "إِنِّي لَكُمۡ رَسُولٌ أَمِينٞ"
        },
        {
            "chapter": 26,
            "verse": 126,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 127,
            "text": "وَمَا أَسۡـَٔلُكُمۡ عَلَيۡهِ مِنۡ أَجۡرٍۖ إِنۡ أَجۡرِيَ إِلَّا عَلَىٰ رَبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 26,
            "verse": 128,
            "text": "أَتَبۡنُونَ بِكُلِّ رِيعٍ ءَايَةٗ تَعۡبَثُونَ"
        },
        {
            "chapter": 26,
            "verse": 129,
            "text": "وَتَتَّخِذُونَ مَصَانِعَ لَعَلَّكُمۡ تَخۡلُدُونَ"
        },
        {
            "chapter": 26,
            "verse": 130,
            "text": "وَإِذَا بَطَشۡتُم بَطَشۡتُمۡ جَبَّارِينَ"
        },
        {
            "chapter": 26,
            "verse": 131,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 132,
            "text": "وَاَتَّقُواْ اُ۬لَّذِي أَمَدَّكُم بِمَا تَعۡلَمُونَ"
        },
        {
            "chapter": 26,
            "verse": 133,
            "text": "أَمَدَّكُم بِأَنۡعَٰمٖ وَبَنِينَ"
        },
        {
            "chapter": 26,
            "verse": 134,
            "text": "وَجَنَّٰتٖ وَعُيُونٍ"
        },
        {
            "chapter": 26,
            "verse": 135,
            "text": "إِنِّيَ أَخَافُ عَلَيۡكُمۡ عَذَابَ يَوۡمٍ عَظِيمٖ"
        },
        {
            "chapter": 26,
            "verse": 136,
            "text": "قَالُواْ سَوَآءٌ عَلَيۡنَا أَوَعَظۡتَ أَمۡ لَمۡ تَكُن مِّنَ اَ۬لۡوَٰعِظِينَ"
        },
        {
            "chapter": 26,
            "verse": 137,
            "text": "إِنۡ هَٰذَا إِلَّا خَلۡقُ اُ۬لۡأَوَّلِينَ"
        },
        {
            "chapter": 26,
            "verse": 138,
            "text": "وَمَا نَحۡنُ بِمُعَذَّبِينَ"
        },
        {
            "chapter": 26,
            "verse": 139,
            "text": "فَكَذَّبُوهُ فَأَهۡلَكۡنَٰهُمۡۚ إِنَّ فِي ذَٰلِكَ لَأٓيَةٗۖ وَمَا كَانَ أَكۡثَرُهُم مُّومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 140,
            "text": "وَإِنَّ رَبَّكَ لَهۡوَ اَ۬لۡعَزِيزُ اُ۬لرَّحِيمُ"
        },
        {
            "chapter": 26,
            "verse": 141,
            "text": "كَذَّبَت ثَّمُودُ اُ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 26,
            "verse": 142,
            "text": "إِذۡ قَال لَّهُمۡ أَخُوهُمۡ صَٰلِحٌ أَلَا تَتَّقُونَ"
        },
        {
            "chapter": 26,
            "verse": 143,
            "text": "إِنِّي لَكُمۡ رَسُولٌ أَمِينٞ"
        },
        {
            "chapter": 26,
            "verse": 144,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 145,
            "text": "وَمَا أَسۡـَٔلُكُمۡ عَلَيۡهِ مِنۡ أَجۡرٍۖ إِنۡ أَجۡرِيَ إِلَّا عَلَىٰ رَبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 26,
            "verse": 146,
            "text": "۞أَتُتۡرَكُونَ فِي مَا هَٰهُنَا ءَامِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 147,
            "text": "فِي جَنَّٰتٖ وَعُيُونٖ"
        },
        {
            "chapter": 26,
            "verse": 148,
            "text": "وَزُرُوعٖ وَنَخۡلٖ طَلۡعُهَا هَضِيمٞ"
        },
        {
            "chapter": 26,
            "verse": 149,
            "text": "وَتَنۡحِتُونَ مِنَ اَ۬لۡجِبَالِ بُيُوتٗا فَرِهِينَ"
        },
        {
            "chapter": 26,
            "verse": 150,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 151,
            "text": "وَلَا تُطِيعُواْ أَمۡرَ اَ۬لۡمُسۡرِفِينَ"
        },
        {
            "chapter": 26,
            "verse": 152,
            "text": "اَ۬لَّذِينَ يُفۡسِدُونَ فِي اِ۬لۡأَرۡضِ وَلَا يُصۡلِحُونَ"
        },
        {
            "chapter": 26,
            "verse": 153,
            "text": "قَالُواْ إِنَّمَا أَنتَ مِنَ اَ۬لۡمُسَحَّرِينَ"
        },
        {
            "chapter": 26,
            "verse": 154,
            "text": "مَا أَنتَ إِلَّا بَشَرٞ مِّثۡلُنَا فَاتِ بِـَٔايَةٍ إِن كُنتَ مِنَ اَ۬لصَّٰدِقِينَ"
        },
        {
            "chapter": 26,
            "verse": 155,
            "text": "قَالَ هَٰذِهِۦ نَاقَةٞ لَّهَا شِرۡبٞ وَلَكُمۡ شِرۡبُ يَوۡمٖ مَّعۡلُومٖ"
        },
        {
            "chapter": 26,
            "verse": 156,
            "text": "وَلَا تَمَسُّوهَا بِسُوٓءٖ فَيَاخُذَكُمۡ عَذَابُ يَوۡمٍ عَظِيمٖ"
        },
        {
            "chapter": 26,
            "verse": 157,
            "text": "فَعَقَرُوهَا فَأَصۡبَحُواْ نَٰدِمِينَ"
        },
        {
            "chapter": 26,
            "verse": 158,
            "text": "فَأَخَذَهُمُ اُ۬لۡعَذَابُۚ إِنَّ فِي ذَٰلِكَ لَأٓيَةٗۖ وَمَا كَانَ أَكۡثَرُهُم مُّومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 159,
            "text": "وَإِنَّ رَبَّكَ لَهۡوَ اَ۬لۡعَزِيزُ اُ۬لرَّحِيمُ"
        },
        {
            "chapter": 26,
            "verse": 160,
            "text": "كَذَّبَتۡ قَوۡمُ لُوطٍ اِ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 26,
            "verse": 161,
            "text": "إِذۡ قَال لَّهُمۡ أَخُوهُمۡ لُوطٌ أَلَا تَتَّقُونَ"
        },
        {
            "chapter": 26,
            "verse": 162,
            "text": "إِنِّي لَكُمۡ رَسُولٌ أَمِينٞ"
        },
        {
            "chapter": 26,
            "verse": 163,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 164,
            "text": "وَمَا أَسۡـَٔلُكُمۡ عَلَيۡهِ مِنۡ أَجۡرٍۖ إِنۡ أَجۡرِيَ إِلَّا عَلَىٰ رَبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 26,
            "verse": 165,
            "text": "أَتَاتُونَ اَ۬لذُّكۡرَانَ مِنَ اَ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 26,
            "verse": 166,
            "text": "وَتَذَرُونَ مَا خَلَقَ لَكُمۡ رَبُّكُم مِّنۡ أَزۡوَٰجِكُمۚ بَلۡ أَنتُمۡ قَوۡمٌ عَادُونَ"
        },
        {
            "chapter": 26,
            "verse": 167,
            "text": "قَالُواْ لَئِن لَّمۡ تَنتَهِ يَٰلُوطُ لَتَكُونَنَّ مِنَ اَ۬لۡمُخۡرَجِينَ"
        },
        {
            "chapter": 26,
            "verse": 168,
            "text": "قَالَ إِنِّي لِعَمَلِكُم مِّنَ اَ۬لۡقَالِينَ"
        },
        {
            "chapter": 26,
            "verse": 169,
            "text": "رَبِّ نَجِّنِي وَأَهۡلِي مِمَّا يَعۡمَلُونَ"
        },
        {
            "chapter": 26,
            "verse": 170,
            "text": "فَنَجَّيۡنَٰهُ وَأَهۡلَهُۥ أَجۡمَعِينَ"
        },
        {
            "chapter": 26,
            "verse": 171,
            "text": "إِلَّا عَجُوزٗا فِي اِ۬لۡغَٰبِرِينَ"
        },
        {
            "chapter": 26,
            "verse": 172,
            "text": "ثُمَّ دَمَّرۡنَا اَ۬لۡأٓخَرِينَ"
        },
        {
            "chapter": 26,
            "verse": 173,
            "text": "وَأَمۡطَرۡنَا عَلَيۡهِم مَّطَرٗاۖ فَسَآءَ مَطَرُ اُ۬لۡمُنذَرِينَ"
        },
        {
            "chapter": 26,
            "verse": 174,
            "text": "إِنَّ فِي ذَٰلِكَ لَأٓيَةٗۖ وَمَا كَانَ أَكۡثَرُهُم مُّومِنِينَ"
        },
        {
            "chapter": 26,
            "verse": 175,
            "text": "وَإِنَّ رَبَّكَ لَهۡوَ اَ۬لۡعَزِيزُ اُ۬لرَّحِيمُ"
        },
        {
            "chapter": 26,
            "verse": 176,
            "text": "۞كَذَّبَ أَصۡحَٰبُ لۡـَٔيۡكَةِ اِ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 26,
            "verse": 177,
            "text": "إِذۡ قَال لَّهُمۡ شُعَيۡبٌ أَلَا تَتَّقُونَ"
        },
        {
            "chapter": 26,
            "verse": 178,
            "text": "إِنِّي لَكُمۡ رَسُولٌ أَمِينٞ"
        },
        {
            "chapter": 26,
            "verse": 179,
            "text": "فَاَتَّقُواْ اُ۬للَّهَ وَأَطِيعُونِ"
        },
        {
            "chapter": 26,
            "verse": 180,
            "text": "وَمَا أَسۡـَٔلُكُمۡ عَلَيۡهِ مِنۡ أَجۡرٍۖ إِنۡ أَجۡرِيَ إِلَّا عَلَىٰ رَبِّ اِ۬لۡعَٰلَمِينَ"
        }
    ]
}