{
    "rukus": [
        {
            "chapter": 37,
            "verse": 22,
            "text": "۞اَ۟حۡشُرُواْ اُ۬لَّذِينَ ظَلَمُواْ وَأَزۡوَٰجَهُمۡ وَمَا كَانُواْ يَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 23,
            "text": "مِن دُونِ اِ۬للَّهِ فَاَهۡدُوهُمۡ إِلَىٰ صِرَٰطِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 24,
            "text": "وَقِفُوهُمۡۖ إِنَّهُم مَّسۡـُٔولُونَ"
        },
        {
            "chapter": 37,
            "verse": 25,
            "text": "مَا لَكُمۡ لَا تَنَاصَرُونَ"
        },
        {
            "chapter": 37,
            "verse": 26,
            "text": "بَلۡ هُمُ اُ۬لۡيَوۡم مُّسۡتَسۡلِمُونَ"
        },
        {
            "chapter": 37,
            "verse": 27,
            "text": "وَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضٖ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 28,
            "text": "قَالُواْ إِنَّكُمۡ كُنتُمۡ تَاتُونَنَا عَنِ اِ۬لۡيَمِينِ"
        },
        {
            "chapter": 37,
            "verse": 29,
            "text": "قَالُواْ بَل لَّمۡ تَكُونُواْ مُومِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 30,
            "text": "وَمَا كَانَ لَنَا عَلَيۡكُم مِّن سُلۡطَٰنِۢۖ بَلۡ كُنتُمۡ قَوۡمٗا طَٰغِينَ"
        },
        {
            "chapter": 37,
            "verse": 31,
            "text": "فَحَقَّ عَلَيۡنَا قَوۡل رَّبِّنَاۖ إِنَّا لَذَآئِقُونَ"
        },
        {
            "chapter": 37,
            "verse": 32,
            "text": "فَأَغۡوَيۡنَٰكُمۡ إِنَّا كُنَّا غَٰوِينَ"
        },
        {
            "chapter": 37,
            "verse": 33,
            "text": "فَإِنَّهُمۡ يَوۡمَئِذٖ فِي اِ۬لۡعَذَابِ مُشۡتَرِكُونَ"
        },
        {
            "chapter": 37,
            "verse": 34,
            "text": "إِنَّا كَذَٰلِكَ نَفۡعَلُ بِالۡمُجۡرِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 35,
            "text": "إِنَّهُمۡ كَانُواْ إِذَا قِيل لَّهُمۡ لَا إِلَٰهَ إِلَّا اَ۬للَّهُ يَسۡتَكۡبِرُونَ"
        },
        {
            "chapter": 37,
            "verse": 36,
            "text": "وَيَقُولُونَ أَٰى۪نَّا لَتَارِكُواْ ءَالِهَتِنَا لِشَاعِرٖ مَّجۡنُونِۢ"
        },
        {
            "chapter": 37,
            "verse": 37,
            "text": "بَلۡ جَآءَ بِالۡحَقِّ وَصَدَّقَ اَ۬لۡمُرۡسَلِينَ"
        },
        {
            "chapter": 37,
            "verse": 38,
            "text": "إِنَّكُمۡ لَذَآئِقُواْ اُ۬لۡعَذَابِ اِ۬لۡأَلِيمِ"
        },
        {
            "chapter": 37,
            "verse": 39,
            "text": "وَمَا تُجۡزَوۡنَ إِلَّا مَا كُنتُمۡ تَعۡمَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 40,
            "text": "إِلَّا عِبَادَ اَ۬للَّهِ اِ۬لۡمُخۡلِصِينَ"
        },
        {
            "chapter": 37,
            "verse": 41,
            "text": "أُوْلَٰٓئِكَ لَهُمۡ رِزۡقٞ مَّعۡلُومٞ"
        },
        {
            "chapter": 37,
            "verse": 42,
            "text": "فَوَٰكِهُ وَهُم مُّكۡرَمُونَ"
        },
        {
            "chapter": 37,
            "verse": 43,
            "text": "فِي جَنَّٰتِ اِ۬لنَّعِيمِ"
        },
        {
            "chapter": 37,
            "verse": 44,
            "text": "عَلَىٰ سُرُرٖ مُّتَقَٰبِلِينَ"
        },
        {
            "chapter": 37,
            "verse": 45,
            "text": "يُطَافُ عَلَيۡهِم بِكَاسٖ مِّن مَّعِينِۢ"
        },
        {
            "chapter": 37,
            "verse": 46,
            "text": "بَيۡضَآءَ لَذَّةٖ لِّلشَّٰرِبِينَ"
        },
        {
            "chapter": 37,
            "verse": 47,
            "text": "لَا فِيهَا غَوۡلٞ وَلَا هُمۡ عَنۡهَا يُنزَفُونَ"
        },
        {
            "chapter": 37,
            "verse": 48,
            "text": "۞وَعِندَهُمۡ قَٰصِرَٰتُ اُ۬لطَّرۡفِ عِينٞ"
        },
        {
            "chapter": 37,
            "verse": 49,
            "text": "كَأَنَّهُنَّ بَيۡضٞ مَّكۡنُونٞ"
        },
        {
            "chapter": 37,
            "verse": 50,
            "text": "فَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضٖ يَتَسَآءَلُونَ"
        },
        {
            "chapter": 37,
            "verse": 51,
            "text": "قَالَ قَآئِلٞ مِّنۡهُمۡ إِنِّي كَانَ لِي قَرِينٞ"
        },
        {
            "chapter": 37,
            "verse": 52,
            "text": "يَقُولُ أَٰ۟نَّكَ لَمِنَ اَ۬لۡمُصَدِّقِينَ"
        },
        {
            "chapter": 37,
            "verse": 53,
            "text": "أَٰ۟ذَا مُتۡنَا وَكُنَّا تُرَابٗا وَعِظَٰمًا أَٰ۟نَّا لَمَدِينُونَ"
        },
        {
            "chapter": 37,
            "verse": 54,
            "text": "قَالَ هَلۡ أَنتُم مُّطَّلِعُونَ"
        },
        {
            "chapter": 37,
            "verse": 55,
            "text": "فَاَطَّلَعَ فَرَء۪اهُ فِي سَوَآءِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 56,
            "text": "قَالَ تَاَللَّهِ إِن كِدتَّ لَتُرۡدِينِ"
        },
        {
            "chapter": 37,
            "verse": 57,
            "text": "وَلَوۡلَا نِعۡمَةُ رَبِّي لَكُنتُ مِنَ اَ۬لۡمُحۡضَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 58,
            "text": "أَفَمَا نَحۡنُ بِمَيِّتِينَ"
        },
        {
            "chapter": 37,
            "verse": 59,
            "text": "إِلَّا مَوۡتَتَنَا اَ۬لۡأُولۭيٰ وَمَا نَحۡنُ بِمُعَذَّبِينَ"
        },
        {
            "chapter": 37,
            "verse": 60,
            "text": "إِنَّ هَٰذَا لَهۡوَ اَ۬لۡفَوۡزُ اُ۬لۡعَظِيمُ"
        },
        {
            "chapter": 37,
            "verse": 61,
            "text": "لِمِثۡلِ هَٰذَا فَلۡيَعۡمَلِ اِ۬لۡعَٰمِلُونَ"
        },
        {
            "chapter": 37,
            "verse": 62,
            "text": "أَذَٰلِكَ خَيۡرٞ نُّزُلًا أَمۡ شَجَرَةُ اُ۬لزَّقُّومِ"
        },
        {
            "chapter": 37,
            "verse": 63,
            "text": "إِنَّا جَعَلۡنَٰهَا فِتۡنَةٗ لِّلظَّٰلِمِينَ"
        },
        {
            "chapter": 37,
            "verse": 64,
            "text": "إِنَّهَا شَجَرَةٞ تَخۡرُجُ فِي أَصۡلِ اِ۬لۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 65,
            "text": "طَلۡعُهَا كَأَنَّهُۥ رُءُوسُ اُ۬لشَّيَٰطِينِ"
        },
        {
            "chapter": 37,
            "verse": 66,
            "text": "فَإِنَّهُمۡ لَأٓكِلُونَ مِنۡهَا فَمَالِـُٔونَ مِنۡهَا اَ۬لۡبُطُونَ"
        },
        {
            "chapter": 37,
            "verse": 67,
            "text": "ثُمَّ إِنَّ لَهُمۡ عَلَيۡهَا لَشَوۡبٗا مِّنۡ حَمِيمٖ"
        },
        {
            "chapter": 37,
            "verse": 68,
            "text": "ثُمَّ إِنَّ مَرۡجِعَهُمۡ لَإِاْلَى اَ۬لۡجَحِيمِ"
        },
        {
            "chapter": 37,
            "verse": 69,
            "text": "إِنَّهُمۡ أَلۡفَوۡاْ ءَابَآءَهُمۡ ضَآلِّينَ"
        },
        {
            "chapter": 37,
            "verse": 70,
            "text": "فَهُمۡ عَلَىٰ ءَاثٰ۪رِهِمۡ يُهۡرَعُونَ"
        },
        {
            "chapter": 37,
            "verse": 71,
            "text": "وَلَقَد ضَّلَّ قَبۡلَهُمۡ أَكۡثَرُ اُ۬لۡأَوَّلِينَ"
        },
        {
            "chapter": 37,
            "verse": 72,
            "text": "وَلَقَدۡ أَرۡسَلۡنَا فِيهِم مُّنذِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 73,
            "text": "فَاَنظُرۡ كَيۡفَ كَانَ عَٰقِبَةُ اُ۬لۡمُنذَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 74,
            "text": "إِلَّا عِبَادَ اَ۬للَّهِ اِ۬لۡمُخۡلِصِينَ"
        }
    ]
}