{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Have you heard tell [Prophet] about the Overwhelming Event"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "On that Day, there will be downcast faces"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "toiling and weary"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "as they enter the blazing Fire"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "and are forced to drink from a boiling spring"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "with no food for them except bitter dry thorns"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "that neither nourish nor satisfy hunger"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "On that Day there will also be faces radiant with bliss"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "well pleased with their labour"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "in a lofty garden"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "where they will hear no idle talk"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "with a flowing spring"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "raised couches"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "goblets placed before them"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "cushions set in rows"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "and carpets spread"
