{
    "rukus": [
        {
            "chapter": 104,
            "verse": 1,
            "text": "Woe to every fault-finding backbiter"
        },
        {
            "chapter": 104,
            "verse": 2,
            "text": "who amasses riches, counting them over"
        },
        {
            "chapter": 104,
            "verse": 3,
            "text": "thinking they will make him live for ever"
        },
        {
            "chapter": 104,
            "verse": 4,
            "text": "No indeed! He will be thrust into the Crusher"
        },
        {
            "chapter": 104,
            "verse": 5,
            "text": "What will explain to you what the Crusher is"
        },
        {
            "chapter": 104,
            "verse": 6,
            "text": "It is God’s Fire, made to blaze"
        },
        {
            "chapter": 104,
            "verse": 7,
            "text": "which rises over people’s hearts"
        },
        {
            "chapter": 104,
            "verse": 8,
            "text": "It closes in on them"
        },
        {
            "chapter": 104,
            "verse": 9,
            "text": "in towering columns"
        }
    ]
}