{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Rezitiere im Namen deines HERRN, der erschuf"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "ER erschuf den Menschen aus 'Alaq"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Rezitiere, und dein HERR ist Der Ehrwurdigste"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Der (das Schreiben) mit dem Schreibgerat lehrte"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "ER lehrte den Menschen, was er nicht kannte"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Gewiß, nein! Gewiß, der Mensch uberschreitet doch die Grenze"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "wenn er sich reich sieht"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Gewiß, zu deinem HERRN ist die Ruckkehr"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Wie seht ihr denjenigen, der es verbietet"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "einem Diener, wenn er das rituelle Gebet verrichtet"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Wie seht ihr es? Sollte er rechtgeleitet sein"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "oder Taqwa gebieten"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Wie seht ihr es? Sollte er ableugnen und den Rucken kehren"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Wußte er etwa nicht, daß ALLAH sieht"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Gewiß, nein! Wenn er nicht aufhort, werden WIR doch die Stirnhaare zerren"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Stirnhaare, die lugnerisch und verfehlend sind"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "So soll er seine Vereinigung rufen"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "WIR werden die strengen Engel rufen"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Gewiß, nein! Hore nicht auf ihn, vollziehe Sudschud und nahere dich"
        }
    ]
}