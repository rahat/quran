{
    "pages": [
        {
            "chapter": 106,
            "verse": 1,
            "text": "Wegen der Verbindung von Quraisch"
        },
        {
            "chapter": 106,
            "verse": 2,
            "text": "ihrer Verbindung der Reise vom Winter und vom Sommer"
        },
        {
            "chapter": 106,
            "verse": 3,
            "text": "so sollen sie Dem HERRN dieses Hauses dienen"
        },
        {
            "chapter": 106,
            "verse": 4,
            "text": "Der sie nach Hungern speiste, und Sicherheit nach Furcht gewahrte"
        },
        {
            "chapter": 107,
            "verse": 1,
            "text": "Kennst du denjenigen, der den Din ableugnet"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Also dieser ist derjenige, der die Waise wegstoßt"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "und zur Speisung des Bedurftigen nicht anspornt"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Also Niedergang sei den des rituellen Gebets Verrichtenden"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "denjenigen, die ihrem rituellen Gebet gegenuber achtlos sind"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "denjenigen, die Riyaa betreiben"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "und die Utensilien verweigern"
        },
        {
            "chapter": 108,
            "verse": 1,
            "text": "Gewiß, WIR gaben dir Al-kauthar"
        },
        {
            "chapter": 108,
            "verse": 2,
            "text": "so verrichte das rituelle Gebet fur deinen HERRN und schachte"
        },
        {
            "chapter": 108,
            "verse": 3,
            "text": "Gewiß, dein Verleumder ist derjenige ohne Stammhalter"
        }
    ]
}