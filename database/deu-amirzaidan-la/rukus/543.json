{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Es ist Al-qari'a"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Was ist Al-qari'a"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "Und was weißt du, was Al-qari'a ist"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "An dem Tag, wenn die Menschen wie verstreute Motten sind"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "und die Berge wie gezupfte Wolle sind"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Also hinsichtlich desjenigen, dessen Gewogenes schwer ist"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "so hat er ein angenehmes Leben"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Und hinsichtlich desjenigen, dessen Gewogenes leicht ist"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "so ist seine Mutter Hawiya"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Und was weißt du, was diese ist"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Es ist ein gluhendes Feuer"
        }
    ]
}