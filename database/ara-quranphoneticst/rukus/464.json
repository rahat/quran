{
    "rukus": [
        {
            "chapter": 54,
            "verse": 23,
            "text": "Kadhabat Thamūdu Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 24,
            "text": "Faqālū 'Abasharāan Minnā Wāĥidāan Nattabi`uhu 'Innā 'Idhāan Lafī Đalālin Wa Su`urin"
        },
        {
            "chapter": 54,
            "verse": 25,
            "text": "A'uulqiya Adh-Dhikru `Alayhi Min Bayninā Bal Huwa Kadhābun 'Ashirun"
        },
        {
            "chapter": 54,
            "verse": 26,
            "text": "Saya`lamūna Ghadāan Mani Al-Kadhābu Al-'Ashiru"
        },
        {
            "chapter": 54,
            "verse": 27,
            "text": "Innā Mursilū An-Nāqati Fitnatan Lahum Fārtaqibhum Wa Aşţabir"
        },
        {
            "chapter": 54,
            "verse": 28,
            "text": "Wa Nabbi'hum 'Anna Al-Mā'a Qismatun Baynahum Kullu Shirbin Muĥtađarun"
        },
        {
            "chapter": 54,
            "verse": 29,
            "text": "Fanādaw Şāĥibahum Fata`āţá Fa`aqara"
        },
        {
            "chapter": 54,
            "verse": 30,
            "text": "Fakayfa Kāna `Adhābī Wa Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 31,
            "text": "Innā 'Arsalnā `Alayhim Şayĥatan Wāĥidatan Fakānū Kahashīmi Al-Muĥtažiri"
        },
        {
            "chapter": 54,
            "verse": 32,
            "text": "Wa Laqad Yassarnā Al-Qur'āna Lildhikri Fahal Min Muddakirin"
        },
        {
            "chapter": 54,
            "verse": 33,
            "text": "Kadhabat Qawmu Lūţin Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 34,
            "text": "Innā 'Arsalnā `Alayhim Ĥāşibāan 'Illā 'Āla Lūţin Najjaynāhum Bisaĥarin"
        },
        {
            "chapter": 54,
            "verse": 35,
            "text": "Ni`matan Min `Indinā Kadhālika Najzī Man Shakara"
        },
        {
            "chapter": 54,
            "verse": 36,
            "text": "Wa Laqad 'Andharahum Baţshatanā Fatamāraw Bin-Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 37,
            "text": "Wa Laqad Rāwadūhu `An Đayfihi Faţamasnā 'A`yunahum Fadhūqū `Adhābī Wa Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 38,
            "text": "Wa Laqad Şabbaĥahum Bukratan `Adhābun Mustaqirrun"
        },
        {
            "chapter": 54,
            "verse": 39,
            "text": "Fadhūqū `Adhābī Wa Nudhuri"
        },
        {
            "chapter": 54,
            "verse": 40,
            "text": "Wa Laqad Yassarnā Al-Qur'āna Lildhikri Fahal Min Muddakirin"
        }
