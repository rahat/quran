{
    "rukus": [
        {
            "chapter": 51,
            "verse": 1,
            "text": "Wa Adh-Dhāriyāti Dharwan"
        },
        {
            "chapter": 51,
            "verse": 2,
            "text": "Fālĥāmilāti Wiqrāan"
        },
        {
            "chapter": 51,
            "verse": 3,
            "text": "Fāljāriyāti Yusrāan"
        },
        {
            "chapter": 51,
            "verse": 4,
            "text": "Fālmuqassimāti 'Amrāan"
        },
        {
            "chapter": 51,
            "verse": 5,
            "text": "Innamā Tū`adūna Laşādiqun"
        },
        {
            "chapter": 51,
            "verse": 6,
            "text": "Wa 'Inna Ad-Dīna Lawāqi`un"
        },
        {
            "chapter": 51,
            "verse": 7,
            "text": "Wa As-Samā'i Dhāti Al-Ĥubuki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Innakum Lafī Qawlin Mukhtalifin"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Yu'ufaku `Anhu Man 'Ufika"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Qutila Al-Kharrāşūna"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Al-Ladhīna Hum Fī Ghamratin Sāhūna"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yas'alūna 'Ayyāna Yawmu Ad-Dīni"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Yawma Hum `Alá An-Nāri Yuftanūna"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Dhūqū Fitnatakum Hādhā Al-Ladhī Kuntum Bihi Tasta`jilūna"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Inna Al-Muttaqīna Fī Jannātin Wa `Uyūnin"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Ākhidhīna Mā 'Ātāhum Rabbuhum 'Innahum Kānū Qabla Dhālika Muĥsinīna"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Kānū Qalīlāan Mina Al-Layli Mā Yahja`ūna"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Wa Bil-'Asĥāri Hum Yastaghfirūna"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Wa Fī 'Amwālihim Ĥaqqun Lilssā'ili Wa Al-Maĥrūmi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Wa Fī Al-'Arđi 'Āyātun Lilmūqinīna"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Wa Fī 'Anfusikum 'Afalā Tubşirūna"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Wa Fī As-Samā'i Rizqukum Wa Mā Tū`adūna"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Fawarabbi As-Samā'i Wa Al-'Arđi 'Innahu Laĥaqqun Mithla Mā 'Annakum Tanţiqūna"
        }
    ]
}