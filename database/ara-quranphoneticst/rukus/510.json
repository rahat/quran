{
    "rukus": [
        {
            "chapter": 74,
            "verse": 1,
            "text": "Yā 'Ayyuhā Al-Muddaththiru"
        },
        {
            "chapter": 74,
            "verse": 2,
            "text": "Qum Fa'andhir"
        },
        {
            "chapter": 74,
            "verse": 3,
            "text": "Wa Rabbaka Fakabbir"
        },
        {
            "chapter": 74,
            "verse": 4,
            "text": "Wa Thiyābaka Faţahhir"
        },
        {
            "chapter": 74,
            "verse": 5,
            "text": "Wa Ar-Rujza Fāhjur"
        },
        {
            "chapter": 74,
            "verse": 6,
            "text": "Wa Lā Tamnun Tastakthiru"
        },
        {
            "chapter": 74,
            "verse": 7,
            "text": "Wa Lirabbika Fāşbir"
        },
        {
            "chapter": 74,
            "verse": 8,
            "text": "Fa'idhā Nuqira Fī An-Nāqūri"
        },
        {
            "chapter": 74,
            "verse": 9,
            "text": "Fadhālika Yawma'idhin Yawmun `Asīrun"
        },
        {
            "chapter": 74,
            "verse": 10,
            "text": "Alá Al-Kāfirīna Ghayru Yasīrin"
        },
        {
            "chapter": 74,
            "verse": 11,
            "text": "Dharnī Wa Man Khalaqtu Waĥīdāan"
        },
        {
            "chapter": 74,
            "verse": 12,
            "text": "Wa Ja`altu Lahu Mālāan Mamdūdāan"
        },
        {
            "chapter": 74,
            "verse": 13,
            "text": "Wa Banīna Shuhūdāan"
        },
        {
            "chapter": 74,
            "verse": 14,
            "text": "Wa Mahhadtu Lahu Tamhīdāan"
        },
        {
            "chapter": 74,
            "verse": 15,
            "text": "Thumma Yaţma`u 'An 'Azīda"
        },
        {
            "chapter": 74,
            "verse": 16,
            "text": "Kallā 'Innahu Kāna Li'yātinā `Anīdāan"
        },
        {
            "chapter": 74,
            "verse": 17,
            "text": "Sa'urhiquhu Şa`ūdāan"
        },
        {
            "chapter": 74,
            "verse": 18,
            "text": "Innahu Fakkara Wa Qaddara"
        },
        {
            "chapter": 74,
            "verse": 19,
            "text": "Faqutila Kayfa Qaddara"
        },
        {
            "chapter": 74,
            "verse": 20,
            "text": "Thumma Qutila Kayfa Qaddara"
        },
        {
            "chapter": 74,
            "verse": 21,
            "text": "Thumma Nažara"
        },
        {
            "chapter": 74,
            "verse": 22,
            "text": "Thumma `Abasa Wa Basara"
        },
        {
            "chapter": 74,
            "verse": 23,
            "text": "Thumma 'Adbara Wa Astakbara"
        },
        {
            "chapter": 74,
            "verse": 24,
            "text": "Faqāla 'In Hādhā 'Illā Siĥrun Yu'utharu"
        },
        {
            "chapter": 74,
            "verse": 25,
            "text": "In Hādhā 'Illā Qawlu Al-Bashari"
        },
        {
            "chapter": 74,
            "verse": 26,
            "text": "Sa'uşlīhi Saqara"
        },
        {
            "chapter": 74,
            "verse": 27,
            "text": "Wa Mā 'Adrāka Mā Saqaru"
        },
        {
            "chapter": 74,
            "verse": 28,
            "text": "Lā Tubqī Wa Lā Tadharu"
        },
        {
            "chapter": 74,
            "verse": 29,
            "text": "Lawwāĥatun Lilbashari"
        },
        {
            "chapter": 74,
            "verse": 30,
            "text": "Alayhā Tis`ata `Ashara"
        },
        {
            "chapter": 74,
            "verse": 31,
            "text": "Wa Mā Ja`alnā 'Aşĥāba An-Nāri 'Illā Malā'ikatan Wa Mā Ja`alnā `Iddatahum 'Illā Fitnatan Lilladhīna Kafarū Liyastayqina Al-Ladhīna 'Ūtū Al-Kitāba Wa Yazdāda Al-Ladhīna 'Āmanū 'Īmānāan Wa Lā Yartāba Al-Ladhīna 'Ūtū Al-Kitāba Wa Al-Mu'uminūna Wa Liyaqūla Al-Ladhīna Fī Qulūbihim Marađun Wa Al-Kāfirūna Mādhā 'Arāda Allāhu Bihadhā Mathalāan Kadhālika Yuđillu Allāhu Man Yashā'u Wa Yahdī Man Yashā'u Wa Mā Ya`lamu Junūda Rabbika 'Illā Huwa Wa Mā Hiya 'Illā Dhikrá Lilbashari"
        }
    ]
}