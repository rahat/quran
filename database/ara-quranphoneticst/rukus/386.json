{
    "rukus": [
        {
            "chapter": 37,
            "verse": 1,
            "text": "Wa Aş-Şāffāti Şaffāan"
        },
        {
            "chapter": 37,
            "verse": 2,
            "text": "Fālzzājirāti Zajrāan"
        },
        {
            "chapter": 37,
            "verse": 3,
            "text": "Fālttāliyāti Dhikrāan"
        },
        {
            "chapter": 37,
            "verse": 4,
            "text": "Inna 'Ilahakum Lawāĥidun"
        },
        {
            "chapter": 37,
            "verse": 5,
            "text": "Rabbu As-Samāwāti Wa Al-'Arđi Wa Mā Baynahumā Wa Rabbu Al-Mashāriqi"
        },
        {
            "chapter": 37,
            "verse": 6,
            "text": "Innā Zayyannā As-Samā'a Ad-Dunyā Bizīnatin Al-Kawākib"
        },
        {
            "chapter": 37,
            "verse": 7,
            "text": "Wa Ĥifžāan Min Kulli Shayţānin Māridin"
        },
        {
            "chapter": 37,
            "verse": 8,
            "text": "Lā Yassamma`ūna 'Ilá Al-Mala'i Al-'A`lá Wa Yuqdhafūna Min Kulli Jānibin"
        },
        {
            "chapter": 37,
            "verse": 9,
            "text": "Duĥūrāan Wa Lahum `Adhābun Wa Aşibun"
        },
        {
            "chapter": 37,
            "verse": 10,
            "text": "Illā Man Khaţifa Al-Khaţfata Fa'atba`ahu Shihābun Thāqibāun"
        },
        {
            "chapter": 37,
            "verse": 11,
            "text": "Fāstaftihim 'Ahum 'Ashaddu Khalqāan 'Am Man Khalaqnā 'Innā Khalaqnāhum Min Ţīnin Lāzibin"
        },
        {
            "chapter": 37,
            "verse": 12,
            "text": "Bal `Ajibta Wa Yaskharūna"
        },
        {
            "chapter": 37,
            "verse": 13,
            "text": "Wa 'Idhā Dhukkirū Lā Yadhkurūna"
        },
        {
            "chapter": 37,
            "verse": 14,
            "text": "Wa 'Idhā Ra'aw 'Āyatan Yastaskhirūna"
        },
        {
            "chapter": 37,
            "verse": 15,
            "text": "Wa Qālū 'In Hādhā 'Illā Siĥrun Mubīnun"
        },
        {
            "chapter": 37,
            "verse": 16,
            "text": "A'idhā Mitnā Wa Kunnā Turābāan Wa `Ižāmāan 'A'innā Lamab`ūthūna"
        },
        {
            "chapter": 37,
            "verse": 17,
            "text": "Awa'ābā'uunā Al-'Awwalūna"
        },
        {
            "chapter": 37,
            "verse": 18,
            "text": "Qul Na`am Wa 'Antum Dākhirūna"
        },
        {
            "chapter": 37,
            "verse": 19,
            "text": "Fa'innamā Hiya Zajratun Wāĥidatun Fa'idhā Hum Yanžurūna"
        },
        {
            "chapter": 37,
            "verse": 20,
            "text": "Wa Qālū Yā Waylanā Hādhā Yawmu Ad-Dīni"
        },
        {
            "chapter": 37,
            "verse": 21,
            "text": "Hādhā Yawmu Al-Faşli Al-Ladhī Kuntum Bihi Tukadhibūna"
        }
    ]
}