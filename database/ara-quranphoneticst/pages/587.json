{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Idhā As-Samā'u Anfaţarat"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Wa 'Idhā Al-Kawākibu Antatharat"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Wa 'Idhā Al-Biĥāru Fujjirat"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Wa 'Idhā Al-Qubūru Bu`thirat"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Alimat Nafsun Mā Qaddamat Wa 'Akhkharat"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Yā 'Ayyuhā Al-'Insānu Mā Gharraka Birabbika Al-Karīmi"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Al-Ladhī Khalaqaka Fasawwāka Fa`adalaka"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Fī 'Ayyi Şūratin Mā Shā'a Rakkabaka"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Kallā Bal Tukadhibūna Bid-Dīni"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Wa 'Inna `Alaykum Laĥāfižīna"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Kirāmāan Kātibīna"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ya`lamūna Mā Taf`alūna"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Inna Al-'Abrāra Lafī Na`īmin"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Wa 'Inna Al-Fujjāra Lafī Jaĥīmin"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Yaşlawnahā Yawma Ad-Dīni"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Wa Mā Hum `Anhā Bighā'ibīna"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Wa Mā 'Adrāka Mā Yawmu Ad-Dīni"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Thumma Mā 'Adrāka Mā Yawmu Ad-Dīni"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Yawma Lā Tamliku Nafsun Linafsin Shay'āan Wa Al-'Amru Yawma'idhin Lillāhi"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Waylun Lilmuţaffifīna"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "Al-Ladhīna 'Idhā Aktālū `Alá An-Nāsi Yastawfūna"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "Wa 'Idhā Kālūhum 'Aw Wazanūhum Yukhsirūna"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Alā Yažunnu 'Ūla'ika 'Annahum Mab`ūthūna"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "Liyawmin `Ažīmin"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "Yawma Yaqūmu An-Nāsu Lirabbi Al-`Ālamīna"
        }
    ]
}