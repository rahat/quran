{
    "pages": [
        {
            "chapter": 51,
            "verse": 7,
            "text": "Wa As-Samā'i Dhāti Al-Ĥubuki"
        },
        {
            "chapter": 51,
            "verse": 8,
            "text": "Innakum Lafī Qawlin Mukhtalifin"
        },
        {
            "chapter": 51,
            "verse": 9,
            "text": "Yu'ufaku `Anhu Man 'Ufika"
        },
        {
            "chapter": 51,
            "verse": 10,
            "text": "Qutila Al-Kharrāşūna"
        },
        {
            "chapter": 51,
            "verse": 11,
            "text": "Al-Ladhīna Hum Fī Ghamratin Sāhūna"
        },
        {
            "chapter": 51,
            "verse": 12,
            "text": "Yas'alūna 'Ayyāna Yawmu Ad-Dīni"
        },
        {
            "chapter": 51,
            "verse": 13,
            "text": "Yawma Hum `Alá An-Nāri Yuftanūna"
        },
        {
            "chapter": 51,
            "verse": 14,
            "text": "Dhūqū Fitnatakum Hādhā Al-Ladhī Kuntum Bihi Tasta`jilūna"
        },
        {
            "chapter": 51,
            "verse": 15,
            "text": "Inna Al-Muttaqīna Fī Jannātin Wa `Uyūnin"
        },
        {
            "chapter": 51,
            "verse": 16,
            "text": "Ākhidhīna Mā 'Ātāhum Rabbuhum 'Innahum Kānū Qabla Dhālika Muĥsinīna"
        },
        {
            "chapter": 51,
            "verse": 17,
            "text": "Kānū Qalīlāan Mina Al-Layli Mā Yahja`ūna"
        },
        {
            "chapter": 51,
            "verse": 18,
            "text": "Wa Bil-'Asĥāri Hum Yastaghfirūna"
        },
        {
            "chapter": 51,
            "verse": 19,
            "text": "Wa Fī 'Amwālihim Ĥaqqun Lilssā'ili Wa Al-Maĥrūmi"
        },
        {
            "chapter": 51,
            "verse": 20,
            "text": "Wa Fī Al-'Arđi 'Āyātun Lilmūqinīna"
        },
        {
            "chapter": 51,
            "verse": 21,
            "text": "Wa Fī 'Anfusikum 'Afalā Tubşirūna"
        },
        {
            "chapter": 51,
            "verse": 22,
            "text": "Wa Fī As-Samā'i Rizqukum Wa Mā Tū`adūna"
        },
        {
            "chapter": 51,
            "verse": 23,
            "text": "Fawarabbi As-Samā'i Wa Al-'Arđi 'Innahu Laĥaqqun Mithla Mā 'Annakum Tanţiqūna"
        },
        {
            "chapter": 51,
            "verse": 24,
            "text": "Hal 'Atāka Ĥadīthu Đayfi 'Ibrāhīma Al-Mukramīna"
        },
        {
            "chapter": 51,
            "verse": 25,
            "text": "Idh Dakhalū `Alayhi Faqālū Salāmāan Qāla Salāmun Qawmun Munkarūna"
        },
        {
            "chapter": 51,
            "verse": 26,
            "text": "Farāgha 'Ilá 'Ahlihi Fajā'a Bi`ijlin Samīnin"
        },
        {
            "chapter": 51,
            "verse": 27,
            "text": "Faqarrabahu 'Ilayhim Qāla 'Alā Ta'kulūna"
        },
        {
            "chapter": 51,
            "verse": 28,
            "text": "Fa'awjasa Minhum Khīfatan Qālū Lā Takhaf Wa Basharūhu Bighulāmin `Alīmin"
        },
        {
            "chapter": 51,
            "verse": 29,
            "text": "Fa'aqbalati Amra'atuhu Fī Şarratin Faşakkat Wajhahā Wa Qālat `Ajūzun `Aqīmun"
        },
        {
            "chapter": 51,
            "verse": 30,
            "text": "Qālū Kadhāliki Qāla Rabbuki 'Innahu Huwa Al-Ĥakīmu Al-`Alīmu"
        }
    ]
}