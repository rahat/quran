{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Kudza Zita raTenzi vako, vepamusoro-soro"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Avo vakasika (zvinhu zvose) vakazvishongedza"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Uye avo vakaronga (mafambiro ezvinhu zvese), uye vakatungamira (vakaratidza vanhu nzira yakanaka kubva kune yakaipa, uye vakaratidza mhuka mafuro adzo)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Uye avo vanobuditsa mafuro"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Uye vomaita (mafuro) kuti aome, oita ruvara rwakasvibira"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Tichakuita kuti uverenge (Qur’aan), saka (Muhammad (SAW)) hauzombokanganwi"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Kunze kweizvo Allah zvavanoda. Zvirokwazvo, (Allah) vanoziva zviri pachena nezvakavanzika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Uye tichakurerutsira nzira iri nyore (kuita mabasa akanaka)"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Naizvozvo yeuchidza (vanhu) kana yeuchidzo ichibatsira"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Rangaridzo ichatambirwa neuyo anotya (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Asi icharambwa nemuipi"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Uyo achapinda moto mukuru"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Zvakare imomo haazombofi (kuti azorore) kana kurarama (hupenyu hwakanaka)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Zvirokwazvo uyo anozvichenesa (kubva mukusatenda uye otambira Islaam) achava anobudirira"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Uye achirangarira zita raTenzi vake, uye achinamata (kashanu pazuva uye achiita minamato isina kukomekedzwa)"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Asi munoshuvira upenyu wepano pasi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Kunyangwe upenyu uchatevera uri nani uye haugumi"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Zvirokwazvo, izvi zviri muMagwaro ekutanga"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Magwaro aAbrahamu naMusa"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ko mashoko ezuva remukomberedzo (rekutongwa) akasvika kwauri here"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Zvimwe zviso pazuva iroro zvichadupukiswa (mumoto, zviso zvevasingatendi)"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Kusevenza (zvakanyanya muhupenyu hwepano pasi nekunamata zvimwe kunze kwaAllah), kunetseka (muhupenyu hwamangwa nekushorwa)"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Vachapinda mumoto unopisa"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Vachapihwa kunwa kubva muchitubu chinokwata (fashaira)"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Vachange vasina chekudya kusara kwemuti weminzwa une muchetura"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Usingavagutsi kana kuvadzivirira kubva kunzara"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "(Zvimwe) zviso pazuva iroro zvichange zvichifara"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Vachifadzwa nemabasa avo (akanaka nekutenda kwavo muIslaam)"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Mubindu (Paradhiso) repamusoro"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Uko kwavasinganzwi manyepo"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Mariri (bindu) muchange muine chitubu chinoerera"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Mariri (bindu) muchange muine mibhedha yakareba (zvigaro zvakasimudzwa zviri pamusoro)"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Uye makomichi akarongedzwa"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Uye mapiro akarongwa mumitsara"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Uye makapeti epamusoro (ose) akawaridzwa"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Havatarisi here ngamera masikirwo ayakaitwa"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Uye denga masimudzirwo arakaitwa"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Uye makomo kuti akamiswa sei (zvakasimba)"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Uye pasi kuti rakatambanudzwa sei"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Naizvozvo yeuchidza (Muhammad (SAW)), zvirokwazvo uri muyeuchidzi"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Hausi muchengetedzi wavo (Hauna masimba pamusoro pavo)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Kusara kweuyo anopikisa uye osiya kutenda"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Uye Allah vachamutonga nemutongo wakakurisisa"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Zvirokwazvo, kwatiri ndiko kune kudzokera kwavo"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Uye zvirokwazvo, kwatiri ndiko kune kutongwa kwavo"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "(Ndinopika) nemambakwedza"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "Neusiku gumi (mazuva gumi ekutanga kwemwedzi weDhul-Hijjah)"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Uye nezvinhu zvinofambidzana muuviri uye zvakapfunda"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Neusiku apo paunopfuura"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Zvirokwazvo mazviri mune humboo kuvanhu vanonzwisisa"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Hauoni here (Iwe Muhammad (SAW)) kuti Tenzi vako vakaita sei nemaAad"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "VeIram (vaive vakareba) kunge mapango"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Vasina vamwe vakasikwa saivo panyika"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Uye maThamood, avo vaiveza matombo mumupata (vachigadzira dzimba)"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Uye (na)Farawo muridzi wehoko (dzaaishandisa kurwadzisa vanhu)"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Avo vaipfurikidza mwero panyika"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Uye vachikonzera nyonga nyonga zvakanyanya mairi (nyika)"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Naizvozvo Tenzi vako vakaisa pavari (vanhu) mitongo yakasiyana siyana yakaoma"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Zvirokwazvo, Tenzi vako vanoona"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Kana munhu, Tenzi vake kana vachinge vamuedza nekumupa chiremera nemakomborero, ipapo anobva ati: “Tenzi vangu vandipa chiremera!”"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Asi kana (Allah) vakamuedza nekushomesa (kutambura) raramo yake anoti: “Tenzi vangu vandidzikisira!”"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Kwete! Asi hamubati nherera zvakanaka (uye hamudzipi nhaka yadzo yakakwana)"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Uye hamukurudzirani kupa chikafu kuAl-Miskeen (anoshaya)"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Uye munodya nhaka nemakaro"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Uye munoda hupfumi nerudo rwakanyanya"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Kwete! Apo nyika paichakuiwa kuita huruva"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Uye Tenzi vako vouya nengirozi dziri mumitsara"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Uye Gehena richaunzwa pedyo musi uyu. Pazuva iroro munhu acharangarira, asi kurangarira (kwake) kuchamubatsirei"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Achati: “Matambudziko kwandiri! Dai ndakatungamidza (mabasa akanaka) paupenyu hwangu!”"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Saka pazuva iri hapana achatonga sematongero avachaita (Allah)"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "Uye hapana achasunga (vasingatendi nevaiti vemabasa akashata) semasungiro avo (Allah)"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "(Zvichanzi kuvatsvene): “Iwe mweya uri pazororo"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Dzoka kunaTenzi vako, uchifadzwa (navo) uye vachifadzwa newe"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Naizvozvo, pinda pakati pevaranda vangu (vanoremekedzeka)"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Uye pinda muParadhiso rangu!”"
        }
    ]
}