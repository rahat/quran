{
    "rukus": [
        {
            "chapter": 88,
            "verse": 1,
            "text": "Ko mashoko ezuva remukomberedzo (rekutongwa) akasvika kwauri here"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Zvimwe zviso pazuva iroro zvichadupukiswa (mumoto, zviso zvevasingatendi)"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Kusevenza (zvakanyanya muhupenyu hwepano pasi nekunamata zvimwe kunze kwaAllah), kunetseka (muhupenyu hwamangwa nekushorwa)"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Vachapinda mumoto unopisa"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Vachapihwa kunwa kubva muchitubu chinokwata (fashaira)"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Vachange vasina chekudya kusara kwemuti weminzwa une muchetura"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "Usingavagutsi kana kuvadzivirira kubva kunzara"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "(Zvimwe) zviso pazuva iroro zvichange zvichifara"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Vachifadzwa nemabasa avo (akanaka nekutenda kwavo muIslaam)"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Mubindu (Paradhiso) repamusoro"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Uko kwavasinganzwi manyepo"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Mariri (bindu) muchange muine chitubu chinoerera"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Mariri (bindu) muchange muine mibhedha yakareba (zvigaro zvakasimudzwa zviri pamusoro)"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Uye makomichi akarongedzwa"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Uye mapiro akarongwa mumitsara"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Uye makapeti epamusoro (ose) akawaridzwa"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Havatarisi here ngamera masikirwo ayakaitwa"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Uye denga masimudzirwo arakaitwa"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Uye makomo kuti akamiswa sei (zvakasimba)"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Uye pasi kuti rakatambanudzwa sei"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Naizvozvo yeuchidza (Muhammad (SAW)), zvirokwazvo uri muyeuchidzi"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Hausi muchengetedzi wavo (Hauna masimba pamusoro pavo)"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Kusara kweuyo anopikisa uye osiya kutenda"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Uye Allah vachamutonga nemutongo wakakurisisa"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Zvirokwazvo, kwatiri ndiko kune kudzokera kwavo"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Uye zvirokwazvo, kwatiri ndiko kune kutongwa kwavo"
        }
    ]
}