{
    "rukus": [
        {
            "chapter": 26,
            "verse": 123,
            "text": "MaAad (vanhu vaHud) vakaramba vatumwa (Kuramba mutumwa mumwechete kuramba vese)"
        },
        {
            "chapter": 26,
            "verse": 124,
            "text": "Apo mukoma wavo Hud akataura kwavari kuti: “Hamutyewo Allah here?”"
        },
        {
            "chapter": 26,
            "verse": 125,
            "text": "“Zvirokwazvo ndini mutumwa akavimbika kwamuri.”"
        },
        {
            "chapter": 26,
            "verse": 126,
            "text": "“Saka ityai Allah uye moteerera ini.”"
        },
        {
            "chapter": 26,
            "verse": 127,
            "text": "“Handina mubairo wandinobvunza kubva kwamuri weizvi. Mubairo wangu haubvi kuna ani kunze kwaTenzi vepasi rose.”"
        },
        {
            "chapter": 26,
            "verse": 128,
            "text": "“Munovaka dzimba panzvimbo yese yakakwirira asi musingadzigari?”"
        },
        {
            "chapter": 26,
            "verse": 129,
            "text": "“Uyezve mungatore (mungavake) dzimba (dzikuru dzakanaka) sezvinonzi muchagaramo zvachose?”"
        },
        {
            "chapter": 26,
            "verse": 130,
            "text": "“Uye kana muchibata (mumwe munhu), munobata zveutsinye?”"
        },
        {
            "chapter": 26,
            "verse": 131,
            "text": "“Saka ityai Allah, uye mova munonditeerera.”"
        },
        {
            "chapter": 26,
            "verse": 132,
            "text": "“Uye ityai avo vakakupai zvose izvo zvamunoziva.”"
        },
        {
            "chapter": 26,
            "verse": 133,
            "text": "“Vakakupai zvipfuwo nevana.”"
        },
        {
            "chapter": 26,
            "verse": 134,
            "text": "“Uye mapindu nezvitubu.”"
        },
        {
            "chapter": 26,
            "verse": 135,
            "text": "“Zvirokwazvo, ndinokutyirai marwadzo ezuva guru (zuva rekutongwa).”"
        },
        {
            "chapter": 26,
            "verse": 136,
            "text": "Vakati: “Zvakafanana kwatiri kutiudza kana kusatiudza.”"
        },
        {
            "chapter": 26,
            "verse": 137,
            "text": "“Idzi ndidzo nyaya dzevanhu vekutanga (vekare).”"
        },
        {
            "chapter": 26,
            "verse": 138,
            "text": "“Uye isu hatisi kuzombotongwa (kuzomborangwa).”"
        },
        {
            "chapter": 26,
            "verse": 139,
            "text": "Saka vakamuramba, uye tikavaparadza. Zvirokwazvo, mune izvi mune chidzidzo, asi vazhinji vavo havatendi"
        },
        {
            "chapter": 26,
            "verse": 140,
            "text": "Uye zvirokwazvo, Tenzi vako ndivo chokwadi vakuru, uye vane tsitsi zhinji"
        }
    ]
}