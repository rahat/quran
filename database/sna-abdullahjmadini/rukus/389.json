{
    "rukus": [
        {
            "chapter": 37,
            "verse": 114,
            "text": "(Naizvozvo) zvirokwazvo, takava tinokomborera Musa naHaroon (Aroni)"
        },
        {
            "chapter": 37,
            "verse": 115,
            "text": "Takava tinovanunura pamwechete nevanhu vavo kubva kudambudziko guru"
        },
        {
            "chapter": 37,
            "verse": 116,
            "text": "Takavabatsira kuti vave vanokunda"
        },
        {
            "chapter": 37,
            "verse": 117,
            "text": "Takava tinovapa Gwaro riri pachena"
        },
        {
            "chapter": 37,
            "verse": 118,
            "text": "Tikavatungamira kunzira yakatwasuka"
        },
        {
            "chapter": 37,
            "verse": 119,
            "text": "Takavasiira (ndangariro dzakanaka) pakati pemadzinza akatevera"
        },
        {
            "chapter": 37,
            "verse": 120,
            "text": "“Salaam (Rugare) ngaruve kuna Musa naHaroon (Aroni)!”"
        },
        {
            "chapter": 37,
            "verse": 121,
            "text": "Zvirokwazvo, ndiwo mapiro atinoita mugove kune vanoita mabasa akanaka"
        },
        {
            "chapter": 37,
            "verse": 122,
            "text": "Zvirokwazvo, vari vaviri (Musa naHaroon (Aroni)) vakanga vari vamwe vevaranda vedu vanotenda"
        },
        {
            "chapter": 37,
            "verse": 123,
            "text": "Uye zvirokwazvo Elyaas (Eriya) akanga ari umwe wevatumwa"
        },
        {
            "chapter": 37,
            "verse": 124,
            "text": "Paakati kuvanhu vake: “Hamutyi Allah here?”"
        },
        {
            "chapter": 37,
            "verse": 125,
            "text": "“Mungadaidza Ba’l (chiumbwa chaizivikanwa chavainamata) muchisiya musiki wepamusoro soro.”"
        },
        {
            "chapter": 37,
            "verse": 126,
            "text": "“Allah, Tenzi venyu, uye Tenzi vemadzibaba (madzitateguru) enyu ekutanga.”"
        },
        {
            "chapter": 37,
            "verse": 127,
            "text": "Asi vakamuramba (Elyaas (Eriya)), saka naizvozvo vachava vanounzwa (kumutongo)"
        },
        {
            "chapter": 37,
            "verse": 128,
            "text": "Kusara kwevaranda vaAllah vakasarudzwa"
        },
        {
            "chapter": 37,
            "verse": 129,
            "text": "Takamusiira (ndangariro dzakanaka) kumadzinza akatevera"
        },
        {
            "chapter": 37,
            "verse": 130,
            "text": "“Salaam (Rugare) ngaruve kuna Elyaaseen (Eriya)!”"
        },
        {
            "chapter": 37,
            "verse": 131,
            "text": "Zvirokwazvo, ndiwo mapiro atinoita mugove kune avo vanoita mabasa akanaka"
        },
        {
            "chapter": 37,
            "verse": 132,
            "text": "Zvirokwazvo, akanga ari umwe wevaranda vedu vanotenda"
        },
        {
            "chapter": 37,
            "verse": 133,
            "text": "Uye zvirokwazvo Loti akanga ari umwe wevatumwa"
        },
        {
            "chapter": 37,
            "verse": 134,
            "text": "(Rangarirai) patakamununura pamwechete nemhuri yake yose"
        },
        {
            "chapter": 37,
            "verse": 135,
            "text": "Kusara kwechembere (mudzimai wake) yakava pane vakasara kumashure"
        },
        {
            "chapter": 37,
            "verse": 136,
            "text": "Uye takava tinoparadza vamwe vose (Guta reSodom kuPalestine)"
        },
        {
            "chapter": 37,
            "verse": 137,
            "text": "Zvirokwazvo, munopfuura nepavari munguva dzemangwanani"
        },
        {
            "chapter": 37,
            "verse": 138,
            "text": "Uye neusiku, hamufungi here"
        }
    ]
}