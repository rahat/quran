{
    "rukus": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "(Ndinopika) nedenga, neAt-Twaariq (nyenyedzi inouya usiku)"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Uye chii chichakuita kuti uzive kuti At-Twaariq chii"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Inyenyedzi inopenya zvikuru"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Munhu wose ane muchengetedzi pamusoro pake (ngirozi dzinoona kumuchengetedza, kunyora mabasa ake akanaka neakaipa).\rnezvemunhu wose"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Naizvozvo munhu ngaatarise kuti akasikwa kubva pai"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Akasikwa kubva mumvura inobuda nesimba"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Inobva pakati pemuzongoza nembabvu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Zvirokwazvo, (Allah) vane simba rekumudzora (kuhupenyu)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Zuva\tzvakavanzika\t(mabasa,\tminamato,\tkutsanya,\tnezvimwewo)\tzvichaongororwa (zvichaburitswa)"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Naizvozvo achange asina simba kana mubatsiri"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "(Ndinopika) nedenga (rine makore emvura) rinopa mvura, nguva nenguva"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Uye nepasi rinotsemuka (nekukura kwemiti nezvirimwa)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Zvirokwazvo, (Qurâ€™aan) iri ishoko rinopatsanura (chokwadi kubva kumanyepo)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Uye harisi chinhu chedambe"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Zvirokwazvo, vari kuronga hurongwa (hwekukuvhiringidza Muhammad (SAW)"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Uye ini (wo) ndiri kuronga hurongwa"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Naizvozvo chimbononotsa vasingatendi, wovasiya kwekanguva"
        }
    ]
}