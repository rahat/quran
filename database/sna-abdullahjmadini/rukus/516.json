{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "(Ndinopika) Ne (mhepo kana ngirozi, kana nhumwa dzaAllah) dzakatumwa imwe mushure meimwe"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "Uye nemhepo dzinovhuvhuta zvine simba"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "Uye nemhepo inopararidza makore nemvura"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "Uye ne (ndima dzemuQur’aan) dzinosiyanisa (zvakanaka nezvakaipa)"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "Uye ne (ngirozi) dzinounza zvidzikiswa (kunhumwa)"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "Kunobvisa zvose zvimhingamupini kana kuyambira"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "Zvirokwazvo, zvawakavimbiswa zvichadarika"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "Apo nyenyedzi dzichadzima chiedza chadzo"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "Uye denga richatsemuka"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "Uye nemakomo paachafuridzwa kure"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "Uye nenhumwa padzichaunganidzwa panguva yakatarwa"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "Zuva ripi (zviratidzo izvi) zvirikunonotserwa"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "Zuva resarudzo (avo veParadhiso kubva kune avo vekuGehena)"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "Uye uchaziva sei kuti zuva resarudzo chii"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "Matambudziko pazuva iri kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "Hatina here kuparadza avo vange vari kumberi kwenyu"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "Uye tichaita vari mumashure mavo vave vanovatevera"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "Nenzira iyi tinoshanda nevapari vemhosva (vasingatendi nevatadzi)"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "Hatina kukusikai kubva kumvura inoshorwa"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Uye tikaigadzika munzvimbo yakachengetedzeka (munhumbu)"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Kwenguva inozivikanwa (yemwana kuti aberekwe)"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Saka takaera, uye tisu nyanzvi dzekuera (zvinhu)"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Hatina here kugadzira pasi senzvimbo yokugara"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Kune vapenyu nevakafa"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Uye tikagadzika imomo makomo akasimba nekureba, uye tikakupai mvura yekunwa inonaka"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(Zvichanzi kune vasingatendi): “Gundumukai kubva kune izvo zvamairamba!”"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "“Gundumukai kumumvuri (wemoto weGehena hutsi huchikwidza) muzvikwata zvitatu.”"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "“Pasina mumvuri, kana kubatsira chimwe chinhu kubva murimi remoto.”"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "Zvirokwazvo, iro (Gehena) richakanda zvingaimi seAl-Qasr (zidanda rechitsiga)"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Sekunge ingamera dzeruvara rwegoride kana tsapo retambo"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Iri ndiro zuva ravasingatauri (padzimwe nguva dzaro)"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Uye havabvumidzwe kupa zvikonzero"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "Iri izuva resarudzo (remutongo). Takuunzai imi nevanhu vekutanga pamwechete"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Saka kana pane zvamakaronga, shandisirai ini (Allah)"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Matambudziko kune avo vanoramba (Zuva Rekutongwa)"
        }
    ]
}