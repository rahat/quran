{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Kudza Zita raTenzi vako, vepamusoro-soro"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Avo vakasika (zvinhu zvose) vakazvishongedza"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Uye avo vakaronga (mafambiro ezvinhu zvese), uye vakatungamira (vakaratidza vanhu nzira yakanaka kubva kune yakaipa, uye vakaratidza mhuka mafuro adzo)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Uye avo vanobuditsa mafuro"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Uye vomaita (mafuro) kuti aome, oita ruvara rwakasvibira"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Tichakuita kuti uverenge (Qurâ€™aan), saka (Muhammad (SAW)) hauzombokanganwi"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Kunze kweizvo Allah zvavanoda. Zvirokwazvo, (Allah) vanoziva zviri pachena nezvakavanzika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Uye tichakurerutsira nzira iri nyore (kuita mabasa akanaka)"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Naizvozvo yeuchidza (vanhu) kana yeuchidzo ichibatsira"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Rangaridzo ichatambirwa neuyo anotya (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Asi icharambwa nemuipi"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Uyo achapinda moto mukuru"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Zvakare imomo haazombofi (kuti azorore) kana kurarama (hupenyu hwakanaka)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Zvirokwazvo uyo anozvichenesa (kubva mukusatenda uye otambira Islaam) achava anobudirira"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Uye achirangarira zita raTenzi vake, uye achinamata (kashanu pazuva uye achiita minamato isina kukomekedzwa)"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Asi munoshuvira upenyu wepano pasi"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Kunyangwe upenyu uchatevera uri nani uye haugumi"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Zvirokwazvo, izvi zviri muMagwaro ekutanga"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Magwaro aAbrahamu naMusa"
        }
    ]
}