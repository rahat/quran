{
    "rukus": [
        {
            "chapter": 56,
            "verse": 1,
            "text": "Kana chiitiko chazoitika (zuva rekutongwa)"
        },
        {
            "chapter": 56,
            "verse": 2,
            "text": "Hapana marambiro nezvekuitika kwacho"
        },
        {
            "chapter": 56,
            "verse": 3,
            "text": "Chichadzikisira (vamwe vachienda kuGehena), uye chichakwiridzira (vamwe vachienda kuParadhiso)"
        },
        {
            "chapter": 56,
            "verse": 4,
            "text": "Apo nyika ichadengenyeka kudengenyeka kunotyisa"
        },
        {
            "chapter": 56,
            "verse": 5,
            "text": "Uye makomo achaparadzwa kuita huruva"
        },
        {
            "chapter": 56,
            "verse": 6,
            "text": "Kuti agove huruva inopepereka"
        },
        {
            "chapter": 56,
            "verse": 7,
            "text": "Uye mose muchange muri mapoka matatu"
        },
        {
            "chapter": 56,
            "verse": 8,
            "text": "Naizvozvo avo vachange vari kuruoko rwerudyi (avo vachapiwa mabhuku ezviito zvavo mumaoko avo erudyi), zvichava zvakanaka sei kune avo vari kuruoko rwerudyi! (Seruremekedzo, nekuti vachapinda Paradhiso)"
        },
        {
            "chapter": 56,
            "verse": 9,
            "text": "Uye avo vachange vari kuruoko rweruboshwe (avo vachapiwa mabhuku ezviito zvavo mumaoko avo eruboshwe), vachange vakadii avo vari kuruoko rweruboshwe! (Sekunyadziswa, nekuti vachapinda kumoto)"
        },
        {
            "chapter": 56,
            "verse": 10,
            "text": "Uye vekutanga (muIslaam nekuita mabasa akanaka pasi rino) vachange vari vekutanga (kuParadhiso)"
        },
        {
            "chapter": 56,
            "verse": 11,
            "text": "Vanhu vakadaro vachange vari padyo (naAllah)"
        },
        {
            "chapter": 56,
            "verse": 12,
            "text": "Mumapindu emufaro (Paradhiso)"
        },
        {
            "chapter": 56,
            "verse": 13,
            "text": "Huwandu hwavo (vekutanga) huchange huchibva kune vanhu vekutanga (kupinda muIslaam)"
        },
        {
            "chapter": 56,
            "verse": 14,
            "text": "Uye vashoma veavo (vekutanga) vachange vari kune vanhu vekupedzisira"
        },
        {
            "chapter": 56,
            "verse": 15,
            "text": "(Vachange vari) pazvigaro zvakashongedzwa nendarama nematombo akakosha"
        },
        {
            "chapter": 56,
            "verse": 16,
            "text": "Vakagara ipapo, vakatarisana"
        },
        {
            "chapter": 56,
            "verse": 17,
            "text": "Vakomana vasingafi vanovabatsira nekuvashandira vachange vachitenderera pavari"
        },
        {
            "chapter": 56,
            "verse": 18,
            "text": "Nemakomichi, nemajagi, uye negirazi rewaini inoerera"
        },
        {
            "chapter": 56,
            "verse": 19,
            "text": "Kubva kwairi havazombowani kurwadziwa nemusoro kana kudhakiwa"
        },
        {
            "chapter": 56,
            "verse": 20,
            "text": "Uye nemuchero wavanosarudza"
        },
        {
            "chapter": 56,
            "verse": 21,
            "text": "Nenyama yeshiri iyo yavanenge vachida"
        },
        {
            "chapter": 56,
            "verse": 22,
            "text": "Uye (kuchange kune) maHoor (vakadzi kwavo) vane maziso makuru ane rudo"
        },
        {
            "chapter": 56,
            "verse": 23,
            "text": "Sokunge matombo akakosha (mapera) akachengetedzwa"
        },
        {
            "chapter": 56,
            "verse": 24,
            "text": "Semubairo wezvavaiita"
        },
        {
            "chapter": 56,
            "verse": 25,
            "text": "Havambonzwi mashoko akaipa imomo kana kutaura kwehuipi imomo"
        },
        {
            "chapter": 56,
            "verse": 26,
            "text": "Asi kutaura kuti: Rugare! Rugare! (kwaziso)"
        },
        {
            "chapter": 56,
            "verse": 27,
            "text": "Uye avo vokuruoko rwerudyi, vachange vari sei avo vekuruoko rwerudyi"
        },
        {
            "chapter": 56,
            "verse": 28,
            "text": "Vachange vari pane miti yeLoti isina minzwa"
        },
        {
            "chapter": 56,
            "verse": 29,
            "text": "Uye mukati meTalh (miti yemabanana) ine michero yakaturikidzana imwe pamusoro peimwe"
        },
        {
            "chapter": 56,
            "verse": 30,
            "text": "Uye nemimvuri yakawedzerwa yakareba"
        },
        {
            "chapter": 56,
            "verse": 31,
            "text": "Uye nemvura ichierera"
        },
        {
            "chapter": 56,
            "verse": 32,
            "text": "Nemichero yakawanda"
        },
        {
            "chapter": 56,
            "verse": 33,
            "text": "Isingashaiki kana kuita mishoma, kana isingaswikiriki"
        },
        {
            "chapter": 56,
            "verse": 34,
            "text": "Uye mumibhedha yakasimudzwa mudenga"
        },
        {
            "chapter": 56,
            "verse": 35,
            "text": "Zvirokwazvo, takavasika vakadzi vekuParadhiso vakakosha"
        },
        {
            "chapter": 56,
            "verse": 36,
            "text": "Uye tikavaita mhandara"
        },
        {
            "chapter": 56,
            "verse": 37,
            "text": "Vanoda (varume vavo chete), (uye) vezera rimwe"
        },
        {
            "chapter": 56,
            "verse": 38,
            "text": "Veavo vekuruoko rwekurudyi"
        }
    ]
}