{
    "rukus": [
        {
            "chapter": 102,
            "verse": 1,
            "text": "Kuunganidza (zvenyika) kunokuitai kuti murivare"
        },
        {
            "chapter": 102,
            "verse": 2,
            "text": "Kusvikira mashanyira makuva (mafa)"
        },
        {
            "chapter": 102,
            "verse": 3,
            "text": "Kwete! Muchasvika pakuziva"
        },
        {
            "chapter": 102,
            "verse": 4,
            "text": "Zvakare kwete! Muchasvika pakuziva"
        },
        {
            "chapter": 102,
            "verse": 5,
            "text": "Kwete! Dai maiziva noruzivo rwechokwadi (magumo ekuunganidza, maisadaro)"
        },
        {
            "chapter": 102,
            "verse": 6,
            "text": "Zvirokwazvo, muchaona viriri remoto (weGehena)"
        },
        {
            "chapter": 102,
            "verse": 7,
            "text": "Uye zvakare, muchauona (iwo moto) nemeso akajeka"
        },
        {
            "chapter": 102,
            "verse": 8,
            "text": "Uye nezuva iroro zvirokwazvo muchabvunzwa nezvemafaro (zvamaiita panyika)"
        }
    ]
}