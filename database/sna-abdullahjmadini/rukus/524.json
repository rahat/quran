{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Apo denga parichapatsanurwa"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Uye apo nyeredzi padzichadonha dzakamwararira (dzakafararira)"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Uye apo nzizi padzichazarisa (padzichapfachukira)"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Uye apo makuva paachashandurwa (achiburitsa zvinenge zviri maari)"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "(Ipapo) Munhu achaziva zvaakaita uye zvaakasiya (zvaasina kuita)"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Iwe munhu! Chii chakuita kuti ushaye hanya nezvaTenzi vako, vanoremekedzwa"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Avo vakakusika, vakakupa chimiro chakanaka, uye vakakupa zvakaenzanirana"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Mune ipi nzira yavaida, vakakuisa (vakakuunza) pamwechete"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Asi munoramba Ad-Deen (zuva rekutongwa)"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Uye zvirokwazvo pamusoro penyu (pane ngirozi dzakasarudzwa) kuti dzikutarisei"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Kiraaman (dzinoremekedzeka) Kaatibeen dzichinyora pasi (mabasa enyu)"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Dzinoziva zvose zvamunoita"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Zvirokwazvo, Al-Abraar (vatendi vatsvene) vachava mumufaro (Paradhiso)"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Uye zvirokwazvo, Al-Fujjaar (vatadzi) vachava mumoto unopisa"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Vachapindamo, voravira marimi awo (moto) anopisa pazuva rekutongwa"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Uye imomo havazomboshaikwi"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Uye chii chichaita kuti uzive chinonzi zuva rekutongwa"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Zvakare, chii chichaita kuti uzive zuva rekutongwa"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Zuva iro hapana munhu achange aine simba rekuiitira mumwe chii zvacho, uye mutongo, zuva iroro uchange uina Allah"
        }
    ]
}