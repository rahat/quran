{
    "pages": [
        {
            "chapter": 112,
            "verse": 1,
            "text": "Iti (Iwe Muhammad (SAW)): “NdiAllah, Vamwechete"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "Allah vanodiwa nezvisikwa zvose (asi ivo hapana chavanoda)"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "Havabereki vana, kuti ivo havana kuberekwa"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "Hakuna mumwe akafanana navo kana kuti kuenzaniswa navo.”"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "Iti: “Ndinotsvaga chengetedzo muna (Allah), Tenzi vekubuda kwezuva (mangwanani)"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "Kubva kune zvakaipa zvavakasika"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "Uye kubva kune zvakaipa zverima (usiku kana hwauya nerima)"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "Uye kubva mune zvakaipa zveavo vanoita huroi kana vachifuridza chishwe (funda)"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "Uye kubva kune zvakaipa zveuyo ane shanje kana achiita shanje.”"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "Iti: “Ndinotsvaga kuchengetedzwa na(Allah), Tenzi wevanhu"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "Mambo wevanhu"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "Mwari wevanhu"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "Kubva kuhuipi hwemuzevezeri (Satani anozevezera mumoyo yevanhu), uye obva (kubva mukuzevezera kwake mumoyo wemunhu mushure mokunge afunga Allah)"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "Uyo anozevezera muzvipfuva zvevanhu"
        },
        {
            "chapter": 114,
            "verse": 6,
            "text": "Kubva kumaJinn (Zvisikwa zvakasikwa nemoto) nevanhu.”"
        }
    ]
}