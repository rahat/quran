{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "(Ndinopika) nedenga, neAt-Twaariq (nyenyedzi inouya usiku)"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Uye chii chichakuita kuti uzive kuti At-Twaariq chii"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Inyenyedzi inopenya zvikuru"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Munhu wose ane muchengetedzi pamusoro pake (ngirozi dzinoona kumuchengetedza, kunyora mabasa ake akanaka neakaipa).\rnezvemunhu wose"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Naizvozvo munhu ngaatarise kuti akasikwa kubva pai"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Akasikwa kubva mumvura inobuda nesimba"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Inobva pakati pemuzongoza nembabvu"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Zvirokwazvo, (Allah) vane simba rekumudzora (kuhupenyu)"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "Zuva\tzvakavanzika\t(mabasa,\tminamato,\tkutsanya,\tnezvimwewo)\tzvichaongororwa (zvichaburitswa)"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Naizvozvo achange asina simba kana mubatsiri"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "(Ndinopika) nedenga (rine makore emvura) rinopa mvura, nguva nenguva"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Uye nepasi rinotsemuka (nekukura kwemiti nezvirimwa)"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Zvirokwazvo, (Qur’aan) iri ishoko rinopatsanura (chokwadi kubva kumanyepo)"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Uye harisi chinhu chedambe"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Zvirokwazvo, vari kuronga hurongwa (hwekukuvhiringidza Muhammad (SAW)"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Uye ini (wo) ndiri kuronga hurongwa"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Naizvozvo chimbononotsa vasingatendi, wovasiya kwekanguva"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Kudza Zita raTenzi vako, vepamusoro-soro"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Avo vakasika (zvinhu zvose) vakazvishongedza"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Uye avo vakaronga (mafambiro ezvinhu zvese), uye vakatungamira (vakaratidza vanhu nzira yakanaka kubva kune yakaipa, uye vakaratidza mhuka mafuro adzo)"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Uye avo vanobuditsa mafuro"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Uye vomaita (mafuro) kuti aome, oita ruvara rwakasvibira"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Tichakuita kuti uverenge (Qur’aan), saka (Muhammad (SAW)) hauzombokanganwi"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Kunze kweizvo Allah zvavanoda. Zvirokwazvo, (Allah) vanoziva zviri pachena nezvakavanzika"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Uye tichakurerutsira nzira iri nyore (kuita mabasa akanaka)"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Naizvozvo yeuchidza (vanhu) kana yeuchidzo ichibatsira"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Rangaridzo ichatambirwa neuyo anotya (Allah)"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Asi icharambwa nemuipi"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Uyo achapinda moto mukuru"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "Zvakare imomo haazombofi (kuti azorore) kana kurarama (hupenyu hwakanaka)"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Zvirokwazvo uyo anozvichenesa (kubva mukusatenda uye otambira Islaam) achava anobudirira"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Uye achirangarira zita raTenzi vake, uye achinamata (kashanu pazuva uye achiita minamato isina kukomekedzwa)"
        }
    ]
}