{
    "rukus": [
        {
            "chapter": 91,
            "verse": 1,
            "text": "Gunese ve onun ısıgına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu ortaya koyan gunduze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Onu buruyen geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Goge ve onu yapana"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Kisiye ve onu sekillendirene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona iyilik ve kotuluk kabiliyeti verene and olsun ki"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Kendini arıtan saadete ermistir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Kendini fenalıklara gomen kimse de ziyana ugramıstır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud milleti, iclerinden en azgını ileri atılınca, azgınlıgı yuzunden peygamberleri yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "Semud milleti, iclerinden en azgını ileri atılınca, azgınlıgı yuzunden peygamberleri yalanladı"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah'ın peygamberi onlara, Allah'ın devesini gostermis ve: \"Allah'ın bu devesine ve onun su hakkına dokunmayın\" demisti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Onu yalanladılar ve deveyi bogazladılar. Bunun uzerine Rableri, suclarından dolayı onların uzerine katmerli azap indirdi; yerle bir etti onları"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bu isin sonundan O'nun korkusu yoktur"
        }
    ]
}