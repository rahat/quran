{
    "rukus": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Yuce Rabbinin adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "O, yaratıp sekil vermistir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "O, her seyi olcuyle yapıp dogru yolu gostermistir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "O, yesillikler bitirmistir"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onları siyah cercope cevirmistir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Sana Kuran'ı Biz okutacagız ve asla unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Allah'ın diledigi bundan mustesnadır. Dogrusu acıgı da, gizliyi de bilen O'dur"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Kolay olanı yapmayı sana kolaylastırırız"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "Faydalı olacaksa insanlara ogut ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Allah'tan korkan ogut alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ondan kacınacaktır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "O, en buyuk atese yaslanacaktır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O, orada ne olecektir ne de dirilecektir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Arınmıs olan, Rabbinin adını anıp namaz kılan, saadete erisecektir"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Arınmıs olan, Rabbinin adını anıp namaz kılan, saadete erisecektir"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ama sizler dunya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Oysa ahiret daha iyi ve daha bakidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Dogrusu bu hukumler ilk sahifelerde, Ibrahim ve Musa'nın sahifelerinde de vardır"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "Dogrusu bu hukumler ilk sahifelerde, Ibrahim ve Musa'nın sahifelerinde de vardır"
        }
    ]
