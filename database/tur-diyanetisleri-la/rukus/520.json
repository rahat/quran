{
    "rukus": [
        {
            "chapter": 79,
            "verse": 1,
            "text": "Canları bogarcasına siddetle cekip alanlara and olsun"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Canları kolaylıkla alanlara and olsun"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yuzup yuzup gidenlere and olsun"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıstıkca yarısan ve isleri yoneten meleklere and olsun"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Yarıstıkca yarısan ve isleri yoneten meleklere and olsun"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gun bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Pesinden bir digeri gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gun kalbler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Insanların gozleri yere doner"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Derler ki: \"Biz eski halimize mi dondurulecegiz"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmıs kemik oldugumuz zaman mı"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "Derler ki: \"O takdirde bu zararına bir donustur"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Dogrusu bir tek cıglık yetecektir"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Hepsi hemen bir duzluge dokulecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa'nın basından gecen olay sana geldi mi"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Tuva'da, kutsal bir vadide, Rabbi ona soyle hitap etmisti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun'a git; dogrusu o azmıstır"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "Ona de ki: Arınmaga niyetin var mı"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbine giden yolu gostereyim ki O'na saygı duyup korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Bunun uzerine ona en buyuk mucizeyi gosterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Ama Firavun yalanladı ve bas kaldırdı"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Geri donup yurudu"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Adamlarını toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Sizin en yuce rabbiniz benim\" dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Allah bunun uzerine onu dunya ve ahiret azabına ugrattı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Dogrusu bunda Allah'tan korkan kimseye ders vardır"
        }
    ]
}