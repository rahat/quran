{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "O čemu oni jedni druge pitaju"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "O Vijesti velikoj"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "o kojoj se oni razilaze"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Tako ne treba, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "I opet, tako ne treba, oni će saznati sigurno"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Zar Zemlju posteljom nismo učinili"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "i planine kao klinove"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "i vas kao parove stvorili"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "i vaš san smirajem učinili"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "i noć odjećom učinili"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "i dan za privređivanje odredili"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "i iznad vas sedam čvrstih sazdali"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "i svjetiljku plamteću postavili"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Mi iz kišnih oblaka vodu obilnu spuštamo"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "da njome žito i bilje izvedemo"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "i bašče guste"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Dan suda je, zaista, već određen"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Dan kada će u rog biti puhnuto, pa ćete vi, sve skupina po skupina,dolaziti"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "i nebo će biti otvoreno i mnogo će kapija imati"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "i planine će pokrenute biti i priviđenje će postati"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Džehennem će, doista, zasjeda biti"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "obijesnima mjesto povratka"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "u kojem će zauvijek ostati"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "u njemu nikakve svježine neće osjetiti, ni pića okusiti"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "osim vrele vode i kapljevine"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "kazne prikladne"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Zaista se oni nisu nadali polaganju računa"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "i potpuno lažnim smatrali su Naše ajete i znakove"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "a Mi smo sve pobrojali i zapisali"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "“Pa zato kušajte, a Mi ćemo vam patnju samo povećati!”"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Zaista, bogobojaznima mjesto spasa i uživanja pripada"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "bašče i vinogradi"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "i djevojke mlade, godina istih"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "i pehari puni"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Tamo prazne besjede i laži neće slušati"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "to im je nagrada od Gospodara tvoga, dar dovoljni"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Od Gospodara nebesa i Zemlje i onoga što je između njih, Svemilosnoga, Kome neće moći zboriti"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "Na Dan kada Duh i meleci budu u redove poredani, oni neće govoriti"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "To je Istiniti dan, pa ko hoće, povratak Gospodaru svome prihvatit će"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Mi vas, zaista, na patnju blisku upozoravamo, na Dan u kojem će čovjek djela ruku svojih vidjeti, a nevjernik uzviknuti: “Kamo sreće da sam prašina bio!”"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Tako Mi onih koji čupaju grubo"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "i onih koji vade blago"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "i onih koji plove brzo"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "i onih koji baš prednjače"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "i onih koji odredbe uređuju"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "na Dan kada ono što potresa potrese"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "za kojim će doći sljedeći"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "srca taj dan bit će uplašena"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "a pogledi njihovi ponizni"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Govore oni: “Zar ćemo, zaista, u kaburovima biti vraćeni u život"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Zar kad truhle kosti postanemo?”"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "I još kažu: “E, to je, dakle, štetan povratak.”"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "A bit će to samo naredba jedna"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "a oni već na površini Zemlje"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Da li je doprla do tebe vijest o Musau"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "kad ga je Gospodar njegov u blagoslovljenoj, čistoj dolini Tuva zovnuo"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "“Idi faraonu, on se, doista, osilio"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "i reci: ‘Da li bi ti da se očistiš"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "da te Gospodaru tvome uputim, pa da Ga se bojiš?’”"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "I onda mu je najveći znak pokazao"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "ali je on porekao i nije poslušao"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "već se okrenuo i potrudio"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "i sabrao i povikao"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "“Ja sam gospodar vaš najveći!”, on je rekao"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "I Allah ga je na drugom, a i na ovom svijetu kaznio"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "U tome ima pouka za svakoga koji se bude Allaha bojao"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "A šta je teže: vas ili nebo stvoriti? On ga je sazdao"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "svod njegov visoko digao i usavršio"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "noći njegove mračnim, a dane svijetlim učinio"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Poslije toga je Zemlju rasprostro"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "iz nje je vodu i pašnjake izveo"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "i planine nepomičnim učinio"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "na uživanje vama i stoci vašoj"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "A kad dođe Nevolja najveća"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "tada će se čovjek prisjetiti onoga što je radio"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "i Oganj će svakome ko vidi biti ukazan"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Pa, onom ko je osion bio"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "i život dunjalučki više volio"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Oganj će baš prebivalište biti"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "A onom ko je od stajanja pred Gospodarom svojim strepio i dušu od"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Džennet će baš boravište biti"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Pitaju te o Času kijameta: “Kada će se dogoditi?”"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Šta ti o spomenu njegovom znaš"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "Znanje o njemu kod Gospodara tvoga skončava"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Tvoje upozorenje na njega prihvata samo onaj koji Ga se boji"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "a njima će se učiniti, Dan taj, kada ga dožive, da su samo jedno"
        }
    ]
}