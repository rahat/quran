{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Kada se nebo rascijepi"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "i posluša Gospodara svoga, a ono će to dužno biti"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "i kada Zemlja bude rastegnuta"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "i izbaci ono što je u njoj, i potpuno se isprazni"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "i posluša Gospodara svoga, a ona će to dužno biti"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "O čovječe, ti se trudiš idući svome Gospodaru, pa ćeš svoj trud naći"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Onaj kome bude knjiga njegova u desnu ruku njegovu data"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "na lahak obračun naići će"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "i svojima će se radostan vratiti"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "a onaj kome bude knjiga njegova iza leđa njegovih data"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "propast će prizivati"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "i u Ognju će gorjeti"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Zaista je on sa porodicom svojom radostan bio"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "i mislio da se nikada neće vratiti"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "a hoće! Gospodar njegov o njemu, zaista, sve zna"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "Ali ne! Kunem se rumenilom večernjim"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "i noći, i onim što ona sakuplja"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "i Mjesecom kada se ispuni"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "vi ćete, sigurno, iz stanja u stanje prelaziti"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Pa šta im je, da ne vjeruju"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "i kad im se Kur’an uči na tlo licem ne padaju"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Naprotiv, oni koji ne vjeruju poriču"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "a Allah najbolje zna šta oni u sebi kriju"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "zato im navijesti patnju bolnu"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "A oni koji budu vjerovali i dobra djela činili, imat će nagradu neprekidnu"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Tako mi neba sa zvijezdama velikim"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "i Dana već obećanog"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "i svjedoka i posvjedočenog"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "prokleti bili vlasnici rovova"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "i vatre s gorivom"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "kada su oko nje sjedili"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "i bili svjedoci onoga što su vjernicima radili"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "A svetili su im se samo zato što su u Allaha, Silnoga i Hvaljenoga"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "Čija je vlast i na nebesima i na Zemlji, a Allah je svemu Svjedok"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Zaista, oni koji su stavljali na kušnju vjernike i vjernice, a zatim se nisu"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Zaista, onima koji su vjerovali i radili dobra djela pripadaju bašče"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Kazne Gospodara tvoga zaista su žestoke"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "On ni iz čega stvara, i ponovo će to učiniti"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "On je Oprostitelj grijeha, Onaj Koji puno voli"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Gospodar Arša, Veličanstveni"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "On radi šta hoće"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "Da li je do tebe doprla vijest o vojskama"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "o faraonu i Semūdu"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Ali, ovi koji ne vjeruju stalno poriču"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "a Allah je iza njih, okružuje ih"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Naprotiv! Ovo je Kur’an veličanstveni"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "na Ploči pomno čuvanoj"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Tako mi neba i noćnog posjetioca"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "A znaš li ti šta je to noćni posjetilac"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "Zvijezda prodiruća"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Nema čovjeka nad kojim neko ne bdije"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Nek’ čovjek pogleda od čega je stvoren"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "Stvoren je od tekućine koja izbija u mlazu"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "koja između kičme i grudi izlazi"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "i On ga je, zaista, kadar ponovno stvoriti"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "onaj dan kada tajne budu otkrivene"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "kada čovjek ni snage ni pomagača neće imati"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "I tako mi neba punog kiše koja se vraća"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "i Zemlje pune raspuknuća"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Kur’an je, doista, govor koji rastavlja Istinu od neistine"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "lakrdija nikakva nije"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Oni, zbilja, prave zamke"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "pa i Ja njima zamke pravim"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "zato nevjernicima još vremena daj, još koji trenutak ih ostavi"
        }
    ]
}