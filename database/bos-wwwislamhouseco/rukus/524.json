{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kada se nebo rascijepi"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "i kada zvijezde popadaju raštrkane"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "i kada mora budu prokuhljala pa se preliju"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "i kada kaburovi budu prevrnuti"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "svako će saznati šta je pripremio, a šta propustio"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O čovječe, šta te je obmanulo u vezi s tvojim Gospodarom Plemenitim"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "Koji te je stvorio, pa učinio da si skladan i da si uspravan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "i kakav je htio lik ti dao"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Naprotiv! Vi još i Sud poričete"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "a nad vama bdiju čuvari"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "plemeniti pisari"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "koji znaju ono što radite"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Čestiti će, sigurno, u Užitak"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "a razvratnici, sigurno, u Oganj"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Na Sudnjem danu u njemu će gorjeti"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "i više iz njega izbivati se neće"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "A šta ti znaš šta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "I još jednom: šta znaš šta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Dan kada niko nikome neće moći nimalo pomoći, Dana tog vlast će"
        }
    ]
}