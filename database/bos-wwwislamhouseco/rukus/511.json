{
    "rukus": [
        {
            "chapter": 74,
            "verse": 32,
            "text": "I tako Mi Mjeseca"
        },
        {
            "chapter": 74,
            "verse": 33,
            "text": "i noći kada mine"
        },
        {
            "chapter": 74,
            "verse": 34,
            "text": "i zore kada svane"
        },
        {
            "chapter": 74,
            "verse": 35,
            "text": "to je, zaista, jedna od najvećih nevolja"
        },
        {
            "chapter": 74,
            "verse": 36,
            "text": "ljudima je opomena"
        },
        {
            "chapter": 74,
            "verse": 37,
            "text": "onome između vas koji hoće naprijed ići ili zaostati"
        },
        {
            "chapter": 74,
            "verse": 38,
            "text": "Svaka duša zalog je onoga što je stekla"
        },
        {
            "chapter": 74,
            "verse": 39,
            "text": "osim onih na desnoj strani"
        },
        {
            "chapter": 74,
            "verse": 40,
            "text": "oni će se u džennetskim baščama raspitivati"
        },
        {
            "chapter": 74,
            "verse": 41,
            "text": "o prestupnicima"
        },
        {
            "chapter": 74,
            "verse": 42,
            "text": "“Šta vas je u Sekar dovelo?”"
        },
        {
            "chapter": 74,
            "verse": 43,
            "text": "“Nismo”, reći će, “bili od onih koji su klanjali"
        },
        {
            "chapter": 74,
            "verse": 44,
            "text": "niti smo siromahe hranili"
        },
        {
            "chapter": 74,
            "verse": 45,
            "text": "I u besposlice smo se sa besposlenjacima upuštali"
        },
        {
            "chapter": 74,
            "verse": 46,
            "text": "i Sudnji dan smo poricali"
        },
        {
            "chapter": 74,
            "verse": 47,
            "text": "sve dok nam smrt nije došla.”"
        },
        {
            "chapter": 74,
            "verse": 48,
            "text": "Njima posredovanje posrednika neće koristiti"
        },
        {
            "chapter": 74,
            "verse": 49,
            "text": "Pa zašto se oni okreću od opomene"
        },
        {
            "chapter": 74,
            "verse": 50,
            "text": "Kao da su divlji magarci preplašeni"
        },
        {
            "chapter": 74,
            "verse": 51,
            "text": "pobjegli od lavova"
        },
        {
            "chapter": 74,
            "verse": 52,
            "text": "Naprotiv, svaki bi čovjek među njima htio da mu se daju listovi rašireni"
        },
        {
            "chapter": 74,
            "verse": 53,
            "text": "Nikada, jer oni se ahireta ne plaše"
        },
        {
            "chapter": 74,
            "verse": 54,
            "text": "Uistinu! Kur’an je opomena"
        },
        {
            "chapter": 74,
            "verse": 55,
            "text": "i ko hoće, na umu će ga imati"
        },
        {
            "chapter": 74,
            "verse": 56,
            "text": "a na umu će ga imati samo ako Allah bude htio, On je jedini dostojan da Ga se boje i dostojan je da oprašta"
        }
    ]
}