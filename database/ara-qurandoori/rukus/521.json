{
    "rukus": [
        {
            "chapter": 79,
            "verse": 27,
            "text": "ءَٰا۬نتُمۡ أَشَدُّ خَلۡقًا أَمِ اِ۬لسَّمَآءُۚ بَنٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "رَفَعَ سَمۡكَهَا فَسَوّٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "وَاَلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحٜ ىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "وَاَلۡجِبَالَ أَرۡسٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "مَتَٰعࣰ ا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "فَإِذَا جَآءَتِ اِ۬لطَّآمَّةُ اُ۬لۡكُبۡر۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "يَوۡمَ يَتَذَكَّرُ اُ۬لۡإِنسَٰنُ مَا سَعٜ يٰ"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "وَبُرِّزَتِ اِ۬لۡجَحِيمُ لِمَن يَر۪يٰ"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "فَأَمَّا مَن طَغَىٰ"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "وَءَاثَرَ اَ۬لۡحَيَوٰةَ اَ۬لدُّنۡيٜ ا"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "فَإِنَّ اَ۬لۡجَحِيمَ هِيَ اَ۬لۡمَأۡوٜ يٰ"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى اَ۬لنَّفۡسَ عَنِ اِ۬لۡهَوٜ يٰ"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "فَإِنَّ اَ۬لۡجَنَّةَ هِيَ اَ۬لۡمَأۡوٜ يٰ"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "۞يَسۡـَٔلُونَكَ عَنِ اِ۬لسَّاعَةِ أَيَّانَ مُرۡسٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "فِيمَ أَنتَ مِن ذِكۡر۪ىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "إِلَىٰ رَبِّكَ مُنتَهٜ ىٰهَآ"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخۡشٜ ىٰهَا"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "كَأَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوٓاْ إِلَّا عَشِيَّةً أَوۡ ضُحٜ ىٰهَا"
        }
    ]
}