        },
        {
            "chapter": 37,
            "verse": 104,
            "text": "وَنَٰدَيۡنَٰهُ أَن يَٰٓإِبۡرَٰهِيمُ"
        },
        {
            "chapter": 37,
            "verse": 105,
            "text": "قَد صَّدَّقۡتَ اَ۬لرُّءۡيٜ آۚ إِنَّا كَذَٰلِكَ نَجۡزِي اِ۬لۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 106,
            "text": "إِنَّ هَٰذَا لَهۡوَ اَ۬لۡبَلَٰٓؤُاْ اُ۬لۡمُبِينُ"
        },
        {
            "chapter": 37,
            "verse": 107,
            "text": "وَفَدَيۡنَٰهُ بِذِبۡحٍ عَظِيمࣲ‏"
        },
        {
            "chapter": 37,
            "verse": 108,
            "text": "وَتَرَكۡنَا عَلَيۡهِ فِي اِ۬لۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 109,
            "text": "سَلَٰمٌ عَلَىٰٓ إِبۡرَٰهِيمَ"
        },
        {
            "chapter": 37,
            "verse": 110,
            "text": "كَذَٰلِكَ نَجۡزِي اِ۬لۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 111,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا اَ۬لۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 112,
            "text": "وَبَشَّرۡنَٰهُ بِإِسۡحَٰقَ نَبِيࣰّ ا مِّنَ اَ۬لصَّٰلِحِينَ"
        },
        {
            "chapter": 37,
            "verse": 113,
            "text": "وَبَٰرَكۡنَا عَلَيۡهِ وَعَلَىٰٓ إِسۡحَٰقَۚ وَمِن ذُرِّيَّتِهِمَا مُحۡسِنࣱ وَظَالِمࣱ لِّنَفۡسِهِۦ مُبِينࣱ‏"
        }
    ]
