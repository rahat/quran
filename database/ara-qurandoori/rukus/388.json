{
    "rukus": [
        {
            "chapter": 37,
            "verse": 75,
            "text": "وَلَقَدۡ نَادَىٰنَا نُوحࣱ فَلَنِعۡمَ اَ۬لۡمُجِيبُونَ"
        },
        {
            "chapter": 37,
            "verse": 76,
            "text": "وَنَجَّيۡنَٰهُ وَأَهۡلَهُۥ مِنَ اَ۬لۡكَرۡبِ اِ۬لۡعَظِيمِ"
        },
        {
            "chapter": 37,
            "verse": 77,
            "text": "وَجَعَلۡنَا ذُرِّيَّتَهُۥ هُمُ اُ۬لۡبَاقِينَ"
        },
        {
            "chapter": 37,
            "verse": 78,
            "text": "وَتَرَكۡنَا عَلَيۡهِ فِي اِ۬لۡأٓخِرِينَ"
        },
        {
            "chapter": 37,
            "verse": 79,
            "text": "سَلَٰمٌ عَلَىٰ نُوحࣲ فِي اِ۬لۡعَٰلَمِينَ"
        },
        {
            "chapter": 37,
            "verse": 80,
            "text": "إِنَّا كَذَٰلِكَ نَجۡزِي اِ۬لۡمُحۡسِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 81,
            "text": "إِنَّهُۥ مِنۡ عِبَادِنَا اَ۬لۡمُؤۡمِنِينَ"
        },
        {
            "chapter": 37,
            "verse": 82,
            "text": "ثُمَّ أَغۡرَقۡنَا اَ۬لۡأٓخَرِينَ"
        },
        {
            "chapter": 37,
            "verse": 83,
            "text": "۞وَإِنَّ مِن شِيعَتِهِۦ لَإِبۡرَٰهِيمَ"
        },
        {
            "chapter": 37,
            "verse": 84,
            "text": "إِذ جَّآءَ رَبَّهُۥ بِقَلۡبࣲ سَلِيمٍ"
        },
        {
            "chapter": 37,
            "verse": 85,
            "text": "إِذۡ قَالَ لِأَبِيهِ وَقَوۡمِهِۦ مَاذَا تَعۡبُدُونَ"
        },
        {
            "chapter": 37,
            "verse": 86,
            "text": "أَٰى۪فۡكًا ءَالِهَةࣰ دُونَ اَ۬للَّهِ تُرِيدُونَ"
        },
        {
            "chapter": 37,
            "verse": 87,
            "text": "فَمَا ظَنُّكُم بِرَبِّ اِ۬لۡعَٰلَمِينَ"
        },
        {
