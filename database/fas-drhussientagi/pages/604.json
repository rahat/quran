    "pages": [
        {
            "chapter": 112,
            "verse": 1,
            "text": "(ای پیامبر) بگو: «او الله یکتا و یگانه است"
        },
        {
            "chapter": 112,
            "verse": 2,
            "text": "الله بی‌نیاز است (و همه نیازمند او هستند)"
        },
        {
            "chapter": 112,
            "verse": 3,
            "text": "نه (فرزندی) زاده و نه زاده شده است"
        },
        {
            "chapter": 112,
            "verse": 4,
            "text": "و هیچ کس همانند و همتای او نبوده و نیست»"
        },
        {
            "chapter": 113,
            "verse": 1,
            "text": "(ای پیامبر) بگو: «به پروردگار سپیده دم پناه می‌برم،"
        },
        {
            "chapter": 113,
            "verse": 2,
            "text": "از شر تمام آنچه آفریده است،"
        },
        {
            "chapter": 113,
            "verse": 3,
            "text": "و از شر تاریکی شب، آنگاه که همه جا را فرا گیرد"
        },
        {
            "chapter": 113,
            "verse": 4,
            "text": "و از شر (زنان جادوگر) که با افسون در گره‌ها می‌دمند"
        },
        {
            "chapter": 113,
            "verse": 5,
            "text": "و از شر حسود آنگاه که حسد ورزد»"
        },
        {
            "chapter": 114,
            "verse": 1,
            "text": "(ای پیامبر) بگو: «به پروردگار مردم پناه می‌برم،"
        },
        {
            "chapter": 114,
            "verse": 2,
            "text": "فرمانروای مردم،"
        },
        {
            "chapter": 114,
            "verse": 3,
            "text": "(إله و) معبود مردم،"
        },
        {
            "chapter": 114,
            "verse": 4,
            "text": "از شر (شیطان) وسوسه‌گر باز پس رونده (به هنگام ذکر الله)"
        },
        {
            "chapter": 114,
            "verse": 5,
            "text": "همان که در دل‌های مردم وسوسه می‌کند"
        },
        {
            "chapter": 114,
