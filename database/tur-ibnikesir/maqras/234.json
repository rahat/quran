{
    "maqras": [
        {
            "chapter": 80,
            "verse": 1,
            "text": "Yüzünü asıp çevirdi"
        },
        {
            "chapter": 80,
            "verse": 2,
            "text": "Kendisine a´ma geldi diye"
        },
        {
            "chapter": 80,
            "verse": 3,
            "text": "Ne bilirsin belki de o, temizlenecekti"
        },
        {
            "chapter": 80,
            "verse": 4,
            "text": "Yahut öğüt alacaktı da bu, kendisine fayda verecekti"
        },
        {
            "chapter": 80,
            "verse": 5,
            "text": "Ama kendisini müstağni gören"
        },
        {
            "chapter": 80,
            "verse": 6,
            "text": "İşte sen, onu karşına alıyorsun"
        },
        {
            "chapter": 80,
            "verse": 7,
            "text": "Halbuki onun temizlenmemesinden sana ne"
        },
        {
            "chapter": 80,
            "verse": 8,
            "text": "Ama sana koşarak gelen"
        },
        {
            "chapter": 80,
            "verse": 9,
            "text": "Ki o, korkar durumdadır"
        },
        {
            "chapter": 80,
            "verse": 10,
            "text": "Sen ona aldırmıyor, oyalanıyorsun"
        },
        {
            "chapter": 80,
            "verse": 11,
            "text": "Sakın; çünkü bu, bir öğüttür"
        },
        {
            "chapter": 80,
            "verse": 12,
            "text": "Dileyen onu düşünüp öğüy alır"
        },
        {
            "chapter": 80,
            "verse": 13,
            "text": "O, çok şerefli sahifelerdedir"
        },
        {
            "chapter": 80,
            "verse": 14,
            "text": "Yüceltilmiş ve temizlenmiştir"
        },
        {
            "chapter": 80,
            "verse": 15,
            "text": "Katiblerin elleriyle"
        },
        {
            "chapter": 80,
            "verse": 16,
            "text": "Kıymetli, saygıdeğer"
        },
        {
            "chapter": 80,
            "verse": 17,
            "text": "Canı çıksın o insanın. Ne de nankördür o"
        },
        {
            "chapter": 80,
            "verse": 18,
            "text": "Neden yaratmış onu"
        },
        {
            "chapter": 80,
            "verse": 19,
            "text": "Meniden yarattı onu da, takdir etti"
        },
        {
            "chapter": 80,
            "verse": 20,
            "text": "Sonra ona tutacağı yolu kolaylaştırmış"
        },
        {
            "chapter": 80,
            "verse": 21,
            "text": "Sonra da onu öldürdü, kabre koydu"
        },
        {
            "chapter": 80,
            "verse": 22,
            "text": "Sonra dilediğinde onu tekrar çıkaracak"
        },
        {
            "chapter": 80,
            "verse": 23,
            "text": "Hayır; Allah´ın emrettiğini yerine getirmemiştir"
        },
        {
            "chapter": 80,
            "verse": 24,
            "text": "Öyle ya insan yiyeceğine bir baksın"
        },
        {
            "chapter": 80,
            "verse": 25,
            "text": "Doğrusu Biz; o suyu, bol bol indirdik"
        },
        {
            "chapter": 80,
            "verse": 26,
            "text": "Sonra toprağı iyiden iyiye yardık"
        },
        {
            "chapter": 80,
            "verse": 27,
            "text": "Böylece orada tane bitirdik"
        },
        {
            "chapter": 80,
            "verse": 28,
            "text": "Üzüm ve yonca"
        },
        {
            "chapter": 80,
            "verse": 29,
            "text": "Zeytin ve hurma"
        },
        {
            "chapter": 80,
            "verse": 30,
            "text": "Sık ve bol ağaçlı bahçeler"
        },
        {
            "chapter": 80,
            "verse": 31,
            "text": "Meyve ve mer´a"
        },
        {
            "chapter": 80,
            "verse": 32,
            "text": "Sizin ve hayvanlarınızın faydalanması için"
        },
        {
            "chapter": 80,
            "verse": 33,
            "text": "O büyük gürültü geldiği zaman"
        },
        {
            "chapter": 80,
            "verse": 34,
            "text": "Kişinin kaçacağı gün; kardeşinden"
        },
        {
            "chapter": 80,
            "verse": 35,
            "text": "Anasından ve babasından"
        },
        {
            "chapter": 80,
            "verse": 36,
            "text": "Eşinden ve oğullarından"
        },
        {
            "chapter": 80,
            "verse": 37,
            "text": "O gün; herkesin kendisine yeter bir işi vardır"
        },
        {
            "chapter": 80,
            "verse": 38,
            "text": "O gün; yüzler vardır, parıl parıl parlar"
        },
        {
            "chapter": 80,
            "verse": 39,
            "text": "Güleç, sevinçli"
        },
        {
            "chapter": 80,
            "verse": 40,
            "text": "O gün; yüzler de vardır, tozlanmış"
        },
        {
            "chapter": 80,
            "verse": 41,
            "text": "Bir karanlık bürümüştür"
        },
        {
            "chapter": 80,
            "verse": 42,
            "text": "İşte bunlar; kafirler ve facirlerdir"
        },
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar döküldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar çiftleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen kız çocuğuna sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günahtan dolayı öldürüldüğü"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sayfalar açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök yerinden oynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kişi önceden ne hazırladığını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Andolsun sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp akıp yuvalarına girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "kararmaya başlayan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ağarmaya başlayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz ki bu; şerefli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Arş´ın sahibi katında değerlidir ve güçlüdür"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendisine uyulandır, emindir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin arkadaşınız asla deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki; onu, apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Gaybdan ötürü o, asla suçlu da değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu, kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Böyleyken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O; ancak alemler için bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru olmak isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbı olan Allah dilemedikçe, sizler dileyemezsiniz"
        }
    ]
}