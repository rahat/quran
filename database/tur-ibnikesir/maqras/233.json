{
    "maqras": [
        {
            "chapter": 78,
            "verse": 1,
            "text": "Neyi soruşturuyorlar"
        },
        {
            "chapter": 78,
            "verse": 2,
            "text": "Büyük haberi mi"
        },
        {
            "chapter": 78,
            "verse": 3,
            "text": "Ki onlar, bunun üzerinde ihtilafa düşmektedirler"
        },
        {
            "chapter": 78,
            "verse": 4,
            "text": "Hayır; ilerde, bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 5,
            "text": "Yine hayır; ilerde, bileceklerdir"
        },
        {
            "chapter": 78,
            "verse": 6,
            "text": "Yeryüzünü bir beşik yapmadık mı"
        },
        {
            "chapter": 78,
            "verse": 7,
            "text": "Dağları da birer kazık"
        },
        {
            "chapter": 78,
            "verse": 8,
            "text": "Ve sizi çift çift yarattık"
        },
        {
            "chapter": 78,
            "verse": 9,
            "text": "Uykunuzu dinlenme kıldık"
        },
        {
            "chapter": 78,
            "verse": 10,
            "text": "Geceyi bir örtü kıldık"
        },
        {
            "chapter": 78,
            "verse": 11,
            "text": "Gündüzü de maişet vakti kıldık"
        },
        {
            "chapter": 78,
            "verse": 12,
            "text": "Üstünüzde yedi sağlamı bina ettik"
        },
        {
            "chapter": 78,
            "verse": 13,
            "text": "Pırıl pırıl parlayan bir kandil astık"
        },
        {
            "chapter": 78,
            "verse": 14,
            "text": "Sıkıştırılmlşlardan da şarıl şarıl bir su indirdik"
        },
        {
            "chapter": 78,
            "verse": 15,
            "text": "Ki onunla taneler ve bitkiler çıkaralım"
        },
        {
            "chapter": 78,
            "verse": 16,
            "text": "Ve sarmaş dolaş bahçeler yetirelim"
        },
        {
            "chapter": 78,
            "verse": 17,
            "text": "Doğrusu, hüküm günü; ta´yin edilmiş bir vakittir"
        },
        {
            "chapter": 78,
            "verse": 18,
            "text": "Sur´a üfürüldüğü gün, hepiniz bölük bölük gelirsiniz"
        },
        {
            "chapter": 78,
            "verse": 19,
            "text": "Gök açılmış, kapı kapı olmuştur"
        },
        {
            "chapter": 78,
            "verse": 20,
            "text": "Dağlar yürütülmüş, serab olmuştur"
        },
        {
            "chapter": 78,
            "verse": 21,
            "text": "Şüphesiz ki cehennem; bir gözetleme yeridir"
        },
        {
            "chapter": 78,
            "verse": 22,
            "text": "Azgınlar için varılacak bir yer"
        },
        {
            "chapter": 78,
            "verse": 23,
            "text": "Sonsuz devirler boyunca orada kalacaklardır"
        },
        {
            "chapter": 78,
            "verse": 24,
            "text": "Orada serinlik ve içecekler tadamayacaklardır"
        },
        {
            "chapter": 78,
            "verse": 25,
            "text": "Sade kaynar bir su ve bir de irinden başka"
        },
        {
            "chapter": 78,
            "verse": 26,
            "text": "İşlediklerine uygun bir ceza olarak"
        },
        {
            "chapter": 78,
            "verse": 27,
            "text": "Çünkü onlar hiç bir hesab beklemezlerdi"
        },
        {
            "chapter": 78,
            "verse": 28,
            "text": "Ve ayetlerimizi yalan sayıp dururlardı"
        },
        {
            "chapter": 78,
            "verse": 29,
            "text": "Oysa Biz, her şeyi yazıp saymıştık"
        },
        {
            "chapter": 78,
            "verse": 30,
            "text": "Öyleyse tadınız, bundan böyle size azabdan başka bir şey artırmayız"
        },
        {
            "chapter": 78,
            "verse": 31,
            "text": "Şüphesiz ki muttakiler için kurtuluş vardır"
        },
        {
            "chapter": 78,
            "verse": 32,
            "text": "Bahçeler ve bağlar"
        },
        {
            "chapter": 78,
            "verse": 33,
            "text": "Göğüsleri tomurcuklanmış yaşıt kızlar"
        },
        {
            "chapter": 78,
            "verse": 34,
            "text": "Ve dolu kaseler"
        },
        {
            "chapter": 78,
            "verse": 35,
            "text": "Orada yalan ve boş söz işitmezler"
        },
        {
            "chapter": 78,
            "verse": 36,
            "text": "Rabbından bir mükafat ve bağış olarak"
        },
        {
            "chapter": 78,
            "verse": 37,
            "text": "Göklerin, yerin ve ikisi arasında bulunanların Rabbı Rahman´dan. O´na hitabda bulunmaya kimse muktadir olamaz"
        },
        {
            "chapter": 78,
            "verse": 38,
            "text": "O gün; ruh ve melekler, saf halinde duracaklardır. Rahman´ın izin verdiklerinden başkaları konuşamazlar. O da doğruyu söyler"
        },
        {
            "chapter": 78,
            "verse": 39,
            "text": "İşte bu; hak gündür. Dileyen Rabbına doğru bir yol edinir"
        },
        {
            "chapter": 78,
            "verse": 40,
            "text": "Biz, sizi yakın bir azabla uyardık. O gün; kişi elleriyle sunduğuna bakacak. Ve kafir: Keşki ben, toprak olsaydım, diyecektir"
        },
        {
            "chapter": 79,
            "verse": 1,
            "text": "Boğulmuş olanları söküp alanlara andolsun"
        },
        {
            "chapter": 79,
            "verse": 2,
            "text": "Canları kolaylıkla alanlara"
        },
        {
            "chapter": 79,
            "verse": 3,
            "text": "Yüzüp yüzüp gidenlere"
        },
        {
            "chapter": 79,
            "verse": 4,
            "text": "Yarıştıkça yarışanlara"
        },
        {
            "chapter": 79,
            "verse": 5,
            "text": "Ve işleri yönetenlere"
        },
        {
            "chapter": 79,
            "verse": 6,
            "text": "O gün; bir sarsıntı sarsar"
        },
        {
            "chapter": 79,
            "verse": 7,
            "text": "Ve peşinden bie başkası gelir"
        },
        {
            "chapter": 79,
            "verse": 8,
            "text": "O gün kalbler titrer"
        },
        {
            "chapter": 79,
            "verse": 9,
            "text": "Gözler yere döner"
        },
        {
            "chapter": 79,
            "verse": 10,
            "text": "Biz, eski halimize mi döndürüleceğiz? derler"
        },
        {
            "chapter": 79,
            "verse": 11,
            "text": "Ufalanmış kemikler olduğumuz vakit mi"
        },
        {
            "chapter": 79,
            "verse": 12,
            "text": "O takdirde bu, zararlı bir dönüştür, derler"
        },
        {
            "chapter": 79,
            "verse": 13,
            "text": "Doğrusu o, bir tek çığlıktır"
        },
        {
            "chapter": 79,
            "verse": 14,
            "text": "Ki o zaman, hepsi toprağın yüzüne dökülecektir"
        },
        {
            "chapter": 79,
            "verse": 15,
            "text": "Musa´nın haberi geldi mi sana"
        },
        {
            "chapter": 79,
            "verse": 16,
            "text": "Hani Rabbı ona; mukaddes vadide, Tuva´da şöyle seslenmişti"
        },
        {
            "chapter": 79,
            "verse": 17,
            "text": "Firavun´a git; çünkü o, çok azmıştır"
        },
        {
            "chapter": 79,
            "verse": 18,
            "text": "De ki: temizlenmeye meylin var mı senin"
        },
        {
            "chapter": 79,
            "verse": 19,
            "text": "Rabbına giden yolu göstereyim de O´ndan korkasın"
        },
        {
            "chapter": 79,
            "verse": 20,
            "text": "Ve ona en büyük mucizeyi gösterdi"
        },
        {
            "chapter": 79,
            "verse": 21,
            "text": "Ama o, yalanlayıp isyan etti"
        },
        {
            "chapter": 79,
            "verse": 22,
            "text": "Sonra arkasını döndü, koşmaya başladı"
        },
        {
            "chapter": 79,
            "verse": 23,
            "text": "Toplayıp seslendi"
        },
        {
            "chapter": 79,
            "verse": 24,
            "text": "Ve sizin en yüce Rabbınız benim, dedi"
        },
        {
            "chapter": 79,
            "verse": 25,
            "text": "Bunu üzerine Allah, onu dünya ve ahiret azabıyla yakaladı"
        },
        {
            "chapter": 79,
            "verse": 26,
            "text": "Şüphesiz ki bunda, korkan kimseler için ibret vardır"
        },
        {
            "chapter": 79,
            "verse": 27,
            "text": "Sizi yaratmak mı daha zordur, yoksa göğü mü? Onu bina etmiştir"
        },
        {
            "chapter": 79,
            "verse": 28,
            "text": "Boynu yükseltmiş ve ona bir şekil vermiştir"
        },
        {
            "chapter": 79,
            "verse": 29,
            "text": "Gecesini karanlık yapmış, gündüzünü ortaya çıkarmıştır"
        },
        {
            "chapter": 79,
            "verse": 30,
            "text": "Bundan sonra yeri döşemiştir"
        },
        {
            "chapter": 79,
            "verse": 31,
            "text": "Ondan suyunu ve otlağını çıkarmıştır"
        },
        {
            "chapter": 79,
            "verse": 32,
            "text": "Dağları dikmiştir"
        },
        {
            "chapter": 79,
            "verse": 33,
            "text": "Sizin ve hayvanlarınızın geçinmesi için"
        },
        {
            "chapter": 79,
            "verse": 34,
            "text": "Fakat o en büyük bela geldiği zaman"
        },
        {
            "chapter": 79,
            "verse": 35,
            "text": "O gün insan, neye çalıştığını anlar"
        },
        {
            "chapter": 79,
            "verse": 36,
            "text": "Cehennem, bakan herkese apaçık gösterilir"
        },
        {
            "chapter": 79,
            "verse": 37,
            "text": "Artık kim haddini aşmışsa"
        },
        {
            "chapter": 79,
            "verse": 38,
            "text": "Ve kim dünya hayatını tercih etmişse"
        },
        {
            "chapter": 79,
            "verse": 39,
            "text": "Şüphesiz ki onun varacağı yer; cehennemdir"
        },
        {
            "chapter": 79,
            "verse": 40,
            "text": "Kim de Rabbının makamından korkup da nefsini heveslerden alıkoyduysa"
        },
        {
            "chapter": 79,
            "verse": 41,
            "text": "Şüphesiz ki onun varacağı yer, cennettir"
        },
        {
            "chapter": 79,
            "verse": 42,
            "text": "Sana kıyametin ne zaman gelip çatacağını soruyorlar"
        },
        {
            "chapter": 79,
            "verse": 43,
            "text": "Senin neyine onun zamanını bildirmek"
        },
        {
            "chapter": 79,
            "verse": 44,
            "text": "En sonunda o, ancak Rabbına aittir"
        },
        {
            "chapter": 79,
            "verse": 45,
            "text": "Sen, ancak O´ndan korkanı uyaransın"
        },
        {
            "chapter": 79,
            "verse": 46,
            "text": "Ve onlar onu gördükleri gün; sadece bir akşam veya bir kuşluk vakti kalmış gibi olurlar"
        }
    ]
}