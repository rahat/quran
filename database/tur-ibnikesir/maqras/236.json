{
    "maqras": [
        {
            "chapter": 84,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 84,
            "verse": 2,
            "text": "Ve Rabbına boyun eğdiğinde. Ki o, zaten boyun eğecektir"
        },
        {
            "chapter": 84,
            "verse": 3,
            "text": "Yer düzeltildiği zaman"
        },
        {
            "chapter": 84,
            "verse": 4,
            "text": "İçinde olanları dışarı atıp boşaldığı zaman"
        },
        {
            "chapter": 84,
            "verse": 5,
            "text": "Ve Rabbına boyun eğdiğinde. Ki o, zaten boyun eğecektir"
        },
        {
            "chapter": 84,
            "verse": 6,
            "text": "Ey insan; sen Rabbın için çalışıp çabaladın, nihayet O´na kavuşacaksın"
        },
        {
            "chapter": 84,
            "verse": 7,
            "text": "Kimin kitabı sağından verilirse"
        },
        {
            "chapter": 84,
            "verse": 8,
            "text": "Kolayca bir hesab ile muhasebe edilecektir"
        },
        {
            "chapter": 84,
            "verse": 9,
            "text": "Ve ailesine de sevinçli olarak dönecektir"
        },
        {
            "chapter": 84,
            "verse": 10,
            "text": "Ama kimin de kitabı arkasından verilirse"
        },
        {
            "chapter": 84,
            "verse": 11,
            "text": "Derhal helakini temenni edecektir"
        },
        {
            "chapter": 84,
            "verse": 12,
            "text": "Ve çılgın aleve girecektir"
        },
        {
            "chapter": 84,
            "verse": 13,
            "text": "Çünkü o, ailesi içinde iken şımarıktı"
        },
        {
            "chapter": 84,
            "verse": 14,
            "text": "O, hiç dönmeyeceğini sanmıştı"
        },
        {
            "chapter": 84,
            "verse": 15,
            "text": "Hayır; muhakkak Rabbı, onu görmekteydi"
        },
        {
            "chapter": 84,
            "verse": 16,
            "text": "And ederim o şafağa"
        },
        {
            "chapter": 84,
            "verse": 17,
            "text": "Geceye ve derleyip topladığı şeye"
        },
        {
            "chapter": 84,
            "verse": 18,
            "text": "Ve toplu halde geldiğinde aya"
        },
        {
            "chapter": 84,
            "verse": 19,
            "text": "Muhakkak siz; bir durumdan diğerine uğratılacaksınız"
        },
        {
            "chapter": 84,
            "verse": 20,
            "text": "Öyleyse, ne oluyor onlara da inanmıyorlar"
        },
        {
            "chapter": 84,
            "verse": 21,
            "text": "Ve Kur´an okunduğu zaman secde etmiyorlar"
        },
        {
            "chapter": 84,
            "verse": 22,
            "text": "Bilakis o küfredenler, yalanlıyorlar"
        },
        {
            "chapter": 84,
            "verse": 23,
            "text": "Halbuki Allah, onların sakındıklarını en iyi bilendir"
        },
        {
            "chapter": 84,
            "verse": 24,
            "text": "Onlara elim bir azabı müjdele"
        },
        {
            "chapter": 84,
            "verse": 25,
            "text": "Ancak iman edip salih amel işleyenler müstesna. Onlara bitip tükenmeyen bir ecir vardır"
        },
        {
            "chapter": 85,
            "verse": 1,
            "text": "Andolsun; burçlar dolu semaya"
        },
        {
            "chapter": 85,
            "verse": 2,
            "text": "Ve vaadolunan güne"
        },
        {
            "chapter": 85,
            "verse": 3,
            "text": "Şehadet edene ve şehadet edilene"
        },
        {
            "chapter": 85,
            "verse": 4,
            "text": "Uhdud ashabının canı çıksın"
        },
        {
            "chapter": 85,
            "verse": 5,
            "text": "Tutuşturucu ateşlerle"
        },
        {
            "chapter": 85,
            "verse": 6,
            "text": "Hani onlar, onun çevresinde oturmuşlardı"
        },
        {
            "chapter": 85,
            "verse": 7,
            "text": "Mü´minlere yaptıklarını seyretmekteydiler"
        },
        {
            "chapter": 85,
            "verse": 8,
            "text": "Onlar; ancak Aziz, Hamid Allah´a inandıkları için mü´minlerden öç almışlardı"
        },
        {
            "chapter": 85,
            "verse": 9,
            "text": "O ki; göklerin ve yerin mülkü kendisinindir. Ve Allah; her şeye Şahid´dir"
        },
        {
            "chapter": 85,
            "verse": 10,
            "text": "Şüphesiz ki mü´min erkekleri ve mü´min kadınları belaya uğratanlar sonra da tevbe etmemiş olanlar, işte onlar için cehennem azabı vardır. Ve yakıcı azab da onlaradır"
        },
        {
            "chapter": 85,
            "verse": 11,
            "text": "Doğrusu iman edip salih amel işlemiş olanlar için, altlarından ırmaklar akan cennetler vardır. İşte büyük kurtuluş budur"
        },
        {
            "chapter": 85,
            "verse": 12,
            "text": "Doğrusu Rabbının yakalayışı amansızdır"
        },
        {
            "chapter": 85,
            "verse": 13,
            "text": "Önce yaratıp sonra tekrarlayan O´dur, O"
        },
        {
            "chapter": 85,
            "verse": 14,
            "text": "O; Ğafur´dur, Vedud´dur"
        },
        {
            "chapter": 85,
            "verse": 15,
            "text": "Arş´ın sahibidir, Mecid´dir"
        },
        {
            "chapter": 85,
            "verse": 16,
            "text": "Dilediğini mutlaka yapandır"
        },
        {
            "chapter": 85,
            "verse": 17,
            "text": "O orduların haberi haberi, sana geldi mi"
        },
        {
            "chapter": 85,
            "verse": 18,
            "text": "Firavun ve Semud´un"
        },
        {
            "chapter": 85,
            "verse": 19,
            "text": "Doğrusu küfredenler, yalanlamadadırlar"
        },
        {
            "chapter": 85,
            "verse": 20,
            "text": "Allah ise onları arkadan kuşatandır"
        },
        {
            "chapter": 85,
            "verse": 21,
            "text": "Doğrusu o; şanlı bir Kur´an´dır"
        },
        {
            "chapter": 85,
            "verse": 22,
            "text": "Levh-i Mahfuz´dadır"
        },
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun göğe ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Nereden bileceksin sen Tarık´ın ne olduğunu"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiç bir nefis yoktur ki mutlaka onun üzerinde bir gözeten bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Şu halde insan bir baksın, neden yaratılmıştır"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "O, atılıp dökülen bir sudan yaratılmıştır"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel kemiği ile göğüslerin arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Şüphe yok ki O, onu yeniden döndürmeye kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gün, sırlar yoklanıp meydana çıkarılacaktır"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun gücü de, yardımcısı da yoktur"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüş yeri olan göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Ve yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Ki doğrusu bu, kesin bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Ve o, bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Gerçekten onlar düzen kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir düzen kurmaktayım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen; şimdilik kafirlere mühlet ver, onları biraz geciktir"
        }
    ]
}