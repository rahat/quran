{
    "maqras": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "Şu beldeye yemin ederim"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "Sen de bu beldede oturmuşsun"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "Doğurana da, doğurduğuna da andolsun ki"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "Biz, insanı gerçekten meşakkat içinde yarattık"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "Yoksa o, kimsenin kendisine güç yetiremeyeceğini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "Yığın yığın mal tüketmişimdir, diyor"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "Kimsenin kendisini görmediğini mi sanıyor"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "Biz; onun için iki göz var etmedik mi"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "Bir dil ve iki dudak"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "Biz; ona iki de yol gösterdik"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "Ama o, sarp yokuşu aşmaya girişemedi"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "Sarp yokuşun ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "Bir kul azad etmektir"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "Yahut açlık gününde yemek yedirmektir"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "Yakınlığı olan bir yetime"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "Yahut yerde sürünen bir yoksula"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "Sonra da iman edenlerden, birbirine sabrı tavsiye, merhameti tavsiye edenlerden olmaktır"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "İşte bunlar, sağcılardır"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "Ayetlerimize küfredenler ise, solcuların kendileridir"
        },
        {
            "chapter": 90,
            "verse": 20,
            "text": "Onlara sımsıkı kapatılmış bir ateş vardır"
        },
        {
            "chapter": 91,
            "verse": 1,
            "text": "Andolsun güneşe ve aydınlığına"
        },
        {
            "chapter": 91,
            "verse": 2,
            "text": "Ardından gelmekte olan aya"
        },
        {
            "chapter": 91,
            "verse": 3,
            "text": "Onu açığa çıkardığında gündüze"
        },
        {
            "chapter": 91,
            "verse": 4,
            "text": "Örtüp bürüdüğünde geceye"
        },
        {
            "chapter": 91,
            "verse": 5,
            "text": "Göğe ve onu bina edene"
        },
        {
            "chapter": 91,
            "verse": 6,
            "text": "Yere ve onu yayana"
        },
        {
            "chapter": 91,
            "verse": 7,
            "text": "Nefse ve onu düzenleyene"
        },
        {
            "chapter": 91,
            "verse": 8,
            "text": "Sonra da ona, hem kötülüğü hem de takvayı ilham edene"
        },
        {
            "chapter": 91,
            "verse": 9,
            "text": "Onu arıtan, gerçekten felaha ermiştir"
        },
        {
            "chapter": 91,
            "verse": 10,
            "text": "Ve onu örtüp kirleten ise muhakkak ziyana uğramıştır"
        },
        {
            "chapter": 91,
            "verse": 11,
            "text": "Semud, azgınlığı yüzünden yalanladı"
        },
        {
            "chapter": 91,
            "verse": 12,
            "text": "En azgınları ileri tıldığında"
        },
        {
            "chapter": 91,
            "verse": 13,
            "text": "Allah´ın peygamberi onlara: Allah´ın devesi ve onun su hakkı, demişti"
        },
        {
            "chapter": 91,
            "verse": 14,
            "text": "Fakat onu yalanladılar ve derken deveyi kestiler. Bunu üzerine günahları sebebiyle Rabbları onları kırıp geçirerek yerle bir etti"
        },
        {
            "chapter": 91,
            "verse": 15,
            "text": "Bunun sonundan hiç korkmayarak"
        },
        {
            "chapter": 92,
            "verse": 1,
            "text": "Andolsun bürüyüp örttüğü zaman, geceye"
        },
        {
            "chapter": 92,
            "verse": 2,
            "text": "Açıldığı zaman gündüze"
        },
        {
            "chapter": 92,
            "verse": 3,
            "text": "Erkeği ve dişiyi yaratana"
        },
        {
            "chapter": 92,
            "verse": 4,
            "text": "Doğrusu sizin çalışmalarınız bölüm bölümdür"
        },
        {
            "chapter": 92,
            "verse": 5,
            "text": "Kim verir ve sakınırsa"
        },
        {
            "chapter": 92,
            "verse": 6,
            "text": "En güzeli de tasdik ederse"
        },
        {
            "chapter": 92,
            "verse": 7,
            "text": "Biz de onu en kolaya muvaffak kılarız"
        },
        {
            "chapter": 92,
            "verse": 8,
            "text": "Ama kim de cimrilik eder ve kendini müstağni sayarsa"
        },
        {
            "chapter": 92,
            "verse": 9,
            "text": "Ve en güzeli yalanlarsa"
        },
        {
            "chapter": 92,
            "verse": 10,
            "text": "Biz de ona en güç olanı kolaylaştırırız"
        },
        {
            "chapter": 92,
            "verse": 11,
            "text": "Halbuki düştüğü zaman, malı o kimseye asla fayda vermez"
        },
        {
            "chapter": 92,
            "verse": 12,
            "text": "Şüphesiz ki, Bizim üzerimizedir hidayet"
        },
        {
            "chapter": 92,
            "verse": 13,
            "text": "Ve hiç şüphesiz ahiret de, dünya da Bizimdir"
        },
        {
            "chapter": 92,
            "verse": 14,
            "text": "Sizi alevler saçan ateşle uyardım"
        },
        {
            "chapter": 92,
            "verse": 15,
            "text": "Oraya ancak en azgın olan girer"
        },
        {
            "chapter": 92,
            "verse": 16,
            "text": "Yalanlayıp yüz çevirmiş olan"
        },
        {
            "chapter": 92,
            "verse": 17,
            "text": "En çok sakınan ise; ondan uzak tutulur"
        },
        {
            "chapter": 92,
            "verse": 18,
            "text": "Ki o, malını temizlemek için verir"
        },
        {
            "chapter": 92,
            "verse": 19,
            "text": "O´nun nezdinde, bir kimsenin karşılık olarak verilecek hiç bir nimeti yoktur"
        },
        {
            "chapter": 92,
            "verse": 20,
            "text": "Ancak yüce Rabbının hoşnudluğunu gözetmek içindir"
        },
        {
            "chapter": 92,
            "verse": 21,
            "text": "Elbette kendisi de hoşnud olacaktır"
        },
        {
            "chapter": 93,
            "verse": 1,
            "text": "Andolsun, kuşluk vaktine"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "Ve sükuna erdiğinde geceye"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "Rabbın seni ne terk etti, ne de darıldı"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "Ahiret, elbette senin için dünyadan daha hayırlıdır"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "Şüphesiz Rabbın, sana verecek ve sen, hoşnud olacaksın"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "O; seni öksüz bulup da barındırmadı mı"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "Seni şaşırmış bulup da doğru yola eriştirmedi mi"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "Seni fakir bulup da zenginleştirmedi mi"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "O halde sakın yetime kahretme"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "Ve bir şey isteyeni azarlama"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "Rabbının nimetine gelince ondan sözet"
        }
    ]
}