{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbının o çok yüce adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki O, yaratıp şekil vermiştir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ki O, takdir edip doğru yolu göstermiştir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ki O, yeşilliği çıkarmıştır"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir çöpe çevirmiştir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacağız da hiç unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başka. Çünkü O, açığı da, gizli olanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni kolay olana muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde öğüt fayda verecekse, öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkacak olan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ise ondan kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en büyük ateşe girecek olandır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O, orada ne ölecek, ne de dirilecektir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu arınan, felah bulmuştur"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbının adını anıp namaz kılan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Fakat siz, dünya hayatını tercih ediyorsunuz"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "Halbuki ahiret, daha hayırlı ve daha bakidir"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Şüphesiz ki bu, ilk sahifelerdedir"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "İbrahim´in ve Musa´nın sahifelerinde"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Her şeyi sarıp kaplayacak olanın haberi sana geldi mi"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "Yüzler vardır ki, o gün zillete bürünmüştür"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "Zor işler altında bitkin düşmüştür"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "Kızgın bir ateşe girerler"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "Kızgın bir kaynaktan içirilecektirler"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "Kötü kokulu, kuru bir dikenden başka yiyecekleri yoktur"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "O, ne semirtir, ne de açlığı giderir"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Yüzler de vardır ki; o gün, parıl parıldır"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "Çalıştıklarından hoşnuddur"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "Yüksek bir cennettedir"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "Orada boş bir laf işitmezler"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "Orada akan bir pınar vardır"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "Orada yüksek tahtlar"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "Yerleştirilmiş kaseler"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "Sıra sıra dizilmiş yastıklar"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "Serilmiş saçaklı halılar vardır"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Onlar deveye bakmazlar mı, nasıl yaratılmıştır"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "Göğe de. Nasıl yükseltilmiştir"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "Dağlara da. Nasıl dikilmiştir"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "Yere de. Nasıl yayılmıştır"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Öğüt ver, çünkü sen; ancak bir öğütçüsün"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "Onların üzerine zor kullanıcı değilsin"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "Ancak kim yüz çevirir ve küfrederse"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "Allah, onu en büyük azab ile azablandırır"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Şüphesiz onların dönüşü, ancak Bizedir"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "Sonra hesablarını görmek de muhakkak Bize düşer"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Andolsun fecre"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "Ve on geceye"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "Hem çifte, hem teke"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "Gelip geçeceği demde geceye"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "Akıl sahipleri için bunların her biri birer yemine değmez mi"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Görmez misin, Rabbın nasıl yaptı Ad´a"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "Sütunlar sahibi İrem´e"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "Ki o, şehirlerde bir benzeri yaratılmayandı"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "Dağ yamacında kayaları oyan Semud kavmine"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "Kazıklar sahibi Firavun´a"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "Ki bunlar, memleketlerde azgınlık etmişlerdi"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "Ve fesadı çoğaltmışlardı"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "Bu sebeple Rabbın onları, azab kırbacından geçirdi"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "Doğrusu Rabbın hep gözetlemekteydi"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Ama insan; Rabbı kendisini deneyip kerem eder ve nimet verirse: Rabbım beni şerefli kıldı, der"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "Ama onu denemek üzere rızkını daraltırsa: Rabbım beni fakir düşürdü, der"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "Hayır; doğrusu siz, yetime ikram etmezsiniz"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "Yoksulu yedirmek için birbirinizi teşvik etmezsiniz"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "Mirası hak gözetmeden yersiniz"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "Malı da pek çok seversiniz"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "Ama yer; parça parça dağıtıldığında"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "Melekler sıra sıra dizilip Rabbının buyruğu geldiğinde"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "Cehennem o gün getirilir. İnsan o gün, hatırlayacak ama hatırlamadan ona ne"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "Keşke bu hayatım için önceden bir şey yapsaydım, der"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "O gün O´nun azabı gibi hiç bir kimse azab edemez"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "O´nun vurduğu bağı kimse vuramaz"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "Ey huzur içinde olan can"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "Dön Rabbına. Sen O´ndan hoşnud, O da senden razı olarak"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "Haydi gir kullarımın arasına"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "Gir, cennetime"
        }
    ]
}