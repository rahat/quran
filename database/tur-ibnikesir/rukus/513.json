{
    "rukus": [
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemişti, namaz da kılmamıştı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamış, yüz çevirmişti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına kendinden yana olanlara gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan kendisinin başıboş bırakılacağını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı olmuş; sonra, onu insan biçimine koyup yaratmış ve düzeltmiştir"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek, dişi iki cins yaratmıştır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Şimdi O; ölüleri diriltmeye kadir değil midir"
        }
    ]
}