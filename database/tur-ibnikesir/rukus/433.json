{
    "rukus": [
        {
            "chapter": 44,
            "verse": 43,
            "text": "Doğrusu zakkum ağacı"
        },
        {
            "chapter": 44,
            "verse": 44,
            "text": "Günahkarların yiyeceğidir"
        },
        {
            "chapter": 44,
            "verse": 45,
            "text": "Erimiş maden gibidir. Karınlarında kaynar"
        },
        {
            "chapter": 44,
            "verse": 46,
            "text": "Suyun kaynaması gibi"
        },
        {
            "chapter": 44,
            "verse": 47,
            "text": "Yakalayın onu, cehennemin ortasına sürükleyin"
        },
        {
            "chapter": 44,
            "verse": 48,
            "text": "Sonra azab olarak başına kaynar su dökün"
        },
        {
            "chapter": 44,
            "verse": 49,
            "text": "Tad bakalım; hani güçlü olan, değerli olan yalnız sendin"
        },
        {
            "chapter": 44,
            "verse": 50,
            "text": "İşte bu; doğrusu şüphelenip durduğunuz şeydir"
        },
        {
            "chapter": 44,
            "verse": 51,
            "text": "Müttakiler ise; muhakkak ki emin bir makamdadırlar"
        },
        {
            "chapter": 44,
            "verse": 52,
            "text": "Bahçelerde ve pınar başlarında"
        },
        {
            "chapter": 44,
            "verse": 53,
            "text": "İnce ipekten ve parlak atlastan giyerler, karşılıklı otururlar"
        },
        {
            "chapter": 44,
            "verse": 54,
            "text": "İşte böyle. Onları iri siyah gözlülerle evlendiririz"
        },
        {
            "chapter": 44,
            "verse": 55,
            "text": "Orada emniyet içerisinde her meyveyi isteyebilirler"
        },
        {
            "chapter": 44,
            "verse": 56,
            "text": "Orada ilk ölümden başka bir ölüm tatmazlar. Ve onları cehennem azabından korumuştur"
        },
        {
            "chapter": 44,
            "verse": 57,
            "text": "Rabbından bir lutuf olarak. İşte bu, büyük kurtuluşun kendisidir"
        },
        {
            "chapter": 44,
            "verse": 58,
            "text": "Biz; onu, öğüt alsınlar diye senin dilinde indirerek kolayca anlaşılmasını sağladık"
        },
        {
            "chapter": 44,
            "verse": 59,
            "text": "Öyleyse bekle, onlar da beklemektedirler"
        }
    ]
}