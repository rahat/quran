{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Gök yarıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "Yıldızlar saçıldığı zaman"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "Denizler kaynaştığı zaman"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "Kabirlerin içi dışına getirildiği zaman"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "Kişi neyi takdim edip neyi te´hir ettiğini bilir"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "Ey insan; keremi bol Rabbına karşı seni ne aldattı"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "O ki; seni yaratmış, sana şekil vermiş ve düzeltmiştir"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "Seni istediği şekilde terkib etmiştir"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "Hayır; bilakis siz, dini yalan sayıyorsunuz"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "Halbuki sizin üzerinizde koruyucular vardır"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "Çok şerefli yazıcılar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "Ne yaptığınızı bilirler"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Şüphesiz ki iyiler; Cennettedirler"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "Ve şüphesiz ki, kötüler de alevli ateştedirler"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "Din günü oraya girerler"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "Ve orada kaybolacak değildirler"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "Din gününün ne olduğunu sen nereden bileceksin"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "Yine sen nereden bileceksin, din gününün ne olduğunu"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "O, öyle bir gündür ki; kimse kimseye hiçbir şeyle fayda sağlamaz. Ve o gün, emir Allah´ındır"
        }
    ]
}