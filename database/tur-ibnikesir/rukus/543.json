{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "Felaket kapısını çalacak olan"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "Nedir o felaket kapısını çalacak olan"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "O felaket kapısını çalacak olanın ne olduğunu bilir misin sen"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "O gün; insanlar yaygın pervaneye dönecekler"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "Dağlar; atılmış renkli yünler gibi olacak"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "Ama kimin tartıları ağır gelirse"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "O, hoş bir hayat içindedir"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "Ama kimin de tartıları hafif gelirse"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "Artık onun da durağı Haviye´dir"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "Onun ne olduğunu bilir misin sen"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "Kızgın bir ateştir"
        }
    ]
}