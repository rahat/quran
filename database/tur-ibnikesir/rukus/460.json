{
    "rukus": [
        {
            "chapter": 53,
            "verse": 1,
            "text": "Andolsun yıldıza, battığı demde"
        },
        {
            "chapter": 53,
            "verse": 2,
            "text": "Arkadaşınız sapmamış ve azmamıştır"
        },
        {
            "chapter": 53,
            "verse": 3,
            "text": "Kendiliğinden konuşmaz o"
        },
        {
            "chapter": 53,
            "verse": 4,
            "text": "Bu; sadece vahy edilen bir vahiydir"
        },
        {
            "chapter": 53,
            "verse": 5,
            "text": "Onu müthiş kuvvetli olan öğretti"
        },
        {
            "chapter": 53,
            "verse": 6,
            "text": "O; akıl ve görüşünde kamildir. Hemen doğruluverdi"
        },
        {
            "chapter": 53,
            "verse": 7,
            "text": "Ve o; en yüce ufukta idi"
        },
        {
            "chapter": 53,
            "verse": 8,
            "text": "Sonra yaklaştı, derken sarkıverdi"
        },
        {
            "chapter": 53,
            "verse": 9,
            "text": "İki yay kadar yahut daha da yakın oldu"
        },
        {
            "chapter": 53,
            "verse": 10,
            "text": "O vakit kuluna vahyedeceğini etti"
        },
        {
            "chapter": 53,
            "verse": 11,
            "text": "Onun gördüğünü gönül yalanlamadı"
        },
        {
            "chapter": 53,
            "verse": 12,
            "text": "Onun gördüğü şey üzerinde de kendisiyle tartışacak mısınız"
        },
        {
            "chapter": 53,
            "verse": 13,
            "text": "Andolsun ki; onu, bir de diğer inişte görmüştü"
        },
        {
            "chapter": 53,
            "verse": 14,
            "text": "Sidret´ül-Münteha´nın yanında"
        },
        {
            "chapter": 53,
            "verse": 15,
            "text": "Ki Cennet´ül-Me´va da onun yanındadır"
        },
        {
            "chapter": 53,
            "verse": 16,
            "text": "O zaman Sidre´yi bürümekte olan bürüyordu"
        },
        {
            "chapter": 53,
            "verse": 17,
            "text": "Göz, ne şaştı ne aştı"
        },
        {
            "chapter": 53,
            "verse": 18,
            "text": "Andolsun ki; Rabbının, ayetlerinden en büyüğünü gördü"
        },
        {
            "chapter": 53,
            "verse": 19,
            "text": "Gördünüz mü Lat ve Uzza´yı"
        },
        {
            "chapter": 53,
            "verse": 20,
            "text": "Üçüncüsü olan diğer Menat´ı"
        },
        {
            "chapter": 53,
            "verse": 21,
            "text": "Demek erkekler sizin, dişiler O´nun mu"
        },
        {
            "chapter": 53,
            "verse": 22,
            "text": "Öyleyse bu, insafsız bir paylaşma"
        },
        {
            "chapter": 53,
            "verse": 23,
            "text": "Bunlar, sizin ve atalarınızın taktığı adlardan başka bir şey değildir. Allah onlara hiç bir güç indirmemiştir. Onlar kuruntudan ve nefislerin arzu ettiği hevadan başkasına uymuyorlar. Halbuki kendilerine Rabblarından hidayet gelmiştir"
        },
        {
            "chapter": 53,
            "verse": 24,
            "text": "Yoksa, her umduğu şey insanın mıdır"
        },
        {
            "chapter": 53,
            "verse": 25,
            "text": "Ahiret de dünya da Allah´ındır"
        }
    ]
}