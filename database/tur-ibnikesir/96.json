{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Yaratan Rabbının adıyla oku"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "O; insanı pıhtılaşmış kandan yarattı"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Oku, Rabbın nihayetsiz kerem sahibidir"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "Ki O, kalemle öğretti"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "İnsana bilmediğini öğretmiştir"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Hayır; insan azgınlık eder"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "Kendini müstağni gördüğü için"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "Dönüş, şüphesiz ancak Rabbınadır"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "O yasaklayanı gördün mü"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "Bir kulu, namaz kılarken"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Gördün mü; ya o kul doğru yolda ise"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "Veya takvayı emrettiyse"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "Gördün mü; ya yalan saydı ve yüz çevirdi ise"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "Bilmez mi ki; Allah gerçekten görmektedir"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Ama bundan vazgeçmezse; andolsun ki; onu alnından tutup sürükleriz"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "Yalancı, günahkar alnından"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "Öyleyse topluluğunu çağırsın dursun"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Biz de zebanileri çağırırız"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Sakın, sen ona uyma. Secde et ve yaklaş"
        }
    ]
}