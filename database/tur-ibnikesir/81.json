{
    "chapter": [
        {
            "chapter": 81,
            "verse": 1,
            "text": "Güneş dürüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 2,
            "text": "Yıldızlar döküldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 3,
            "text": "Dağlar yürütüldüğü zaman"
        },
        {
            "chapter": 81,
            "verse": 4,
            "text": "Gebe develer salıverildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 5,
            "text": "Vahşi hayvanlar bir araya toplandığı zaman"
        },
        {
            "chapter": 81,
            "verse": 6,
            "text": "Denizler kaynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 7,
            "text": "Ruhlar çiftleştirildiği zaman"
        },
        {
            "chapter": 81,
            "verse": 8,
            "text": "Diri diri gömülen kız çocuğuna sorulduğu zaman"
        },
        {
            "chapter": 81,
            "verse": 9,
            "text": "Hangi günahtan dolayı öldürüldüğü"
        },
        {
            "chapter": 81,
            "verse": 10,
            "text": "Sayfalar açıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 11,
            "text": "Gök yerinden oynatıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 12,
            "text": "Cehennem kızıştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 13,
            "text": "Ve Cennet yaklaştırıldığı zaman"
        },
        {
            "chapter": 81,
            "verse": 14,
            "text": "Kişi önceden ne hazırladığını bilecektir"
        },
        {
            "chapter": 81,
            "verse": 15,
            "text": "Andolsun sinenlere"
        },
        {
            "chapter": 81,
            "verse": 16,
            "text": "Akıp akıp yuvalarına girenlere"
        },
        {
            "chapter": 81,
            "verse": 17,
            "text": "kararmaya başlayan geceye"
        },
        {
            "chapter": 81,
            "verse": 18,
            "text": "Ağarmaya başlayan sabaha"
        },
        {
            "chapter": 81,
            "verse": 19,
            "text": "Şüphesiz ki bu; şerefli bir elçinin sözüdür"
        },
        {
            "chapter": 81,
            "verse": 20,
            "text": "Arş´ın sahibi katında değerlidir ve güçlüdür"
        },
        {
            "chapter": 81,
            "verse": 21,
            "text": "Kendisine uyulandır, emindir"
        },
        {
            "chapter": 81,
            "verse": 22,
            "text": "Sizin arkadaşınız asla deli değildir"
        },
        {
            "chapter": 81,
            "verse": 23,
            "text": "Andolsun ki; onu, apaçık ufukta görmüştür"
        },
        {
            "chapter": 81,
            "verse": 24,
            "text": "Gaybdan ötürü o, asla suçlu da değildir"
        },
        {
            "chapter": 81,
            "verse": 25,
            "text": "Bu, kovulmuş şeytanın sözü değildir"
        },
        {
            "chapter": 81,
            "verse": 26,
            "text": "Böyleyken nereye gidiyorsunuz"
        },
        {
            "chapter": 81,
            "verse": 27,
            "text": "O; ancak alemler için bir öğüttür"
        },
        {
            "chapter": 81,
            "verse": 28,
            "text": "Sizden doğru olmak isteyenler için"
        },
        {
            "chapter": 81,
            "verse": 29,
            "text": "Alemlerin Rabbı olan Allah dilemedikçe, sizler dileyemezsiniz"
        }
    ]
}