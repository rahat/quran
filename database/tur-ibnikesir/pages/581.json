        {
            "chapter": 77,
            "verse": 20,
            "text": "Sizi bayağı bir sudan, Biz yaratmadık mı"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "Onu sağlam bir yere yerleştirdik"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "Belli bir süreye kadar"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "Bunu Biz takdir ettik, ne güzel takdir edenleriz Biz"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "Biz; yeryüzünü toplantı mahalli kılmadık mı"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "Ölülere de, dirilere de"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "Orada yüksek ve sabit dağlar var edip tatlı sular içirmedik mi size"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "Varın yalanlayıp durduğunuz şeye gidin"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "Üç kollu gölgeye gidin"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "Gölge yapmaz ve alevden korumaz"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "O; her biri bir saray gibi kıvılcımlar atar"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "Ve her biri sanki birer sarı erkek devedir"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "Bu; onların konuşamayacakları gündür"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "Onlara izin de verilmez ki özür dilesinler"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "İşte bu; sizleri ve öncekileri topladığımız hüküm günüdür"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "Eğer Bana karşı bir düzeniniz varsa; onu hemen kurun"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 41,
            "text": "Muhakkak ki muttakiler, gölgeliklerde ve pınarlardadırlar"
        },
        {
            "chapter": 77,
            "verse": 42,
            "text": "Ve canlarının istediğinden meyveler"
        },
        {
            "chapter": 77,
            "verse": 43,
            "text": "İşlediklerinize karşılık afiyetle yeyin, için"
        },
        {
            "chapter": 77,
            "verse": 44,
            "text": "Şüphesiz ki Biz; ihsan edenleri böyle mükafatlandırırız"
        },
        {
            "chapter": 77,
            "verse": 45,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 46,
            "text": "Yeyin ve biraz eğlenin. Doğrusu sizler suçlularsınız"
        },
        {
            "chapter": 77,
            "verse": 47,
            "text": "Vay haline o gün, yalanlayanların"
        },
        {
            "chapter": 77,
            "verse": 48,
            "text": "Onlara; rüku edin, denildiği zaman, rüku´a varmazlar"
