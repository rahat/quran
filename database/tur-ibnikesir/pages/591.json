{
    "pages": [
        {
            "chapter": 86,
            "verse": 1,
            "text": "Andolsun göğe ve Tarık´a"
        },
        {
            "chapter": 86,
            "verse": 2,
            "text": "Nereden bileceksin sen Tarık´ın ne olduğunu"
        },
        {
            "chapter": 86,
            "verse": 3,
            "text": "O, delen yıldızdır"
        },
        {
            "chapter": 86,
            "verse": 4,
            "text": "Hiç bir nefis yoktur ki mutlaka onun üzerinde bir gözeten bulunmasın"
        },
        {
            "chapter": 86,
            "verse": 5,
            "text": "Şu halde insan bir baksın, neden yaratılmıştır"
        },
        {
            "chapter": 86,
            "verse": 6,
            "text": "O, atılıp dökülen bir sudan yaratılmıştır"
        },
        {
            "chapter": 86,
            "verse": 7,
            "text": "Bel kemiği ile göğüslerin arasından çıkar"
        },
        {
            "chapter": 86,
            "verse": 8,
            "text": "Şüphe yok ki O, onu yeniden döndürmeye kadirdir"
        },
        {
            "chapter": 86,
            "verse": 9,
            "text": "O gün, sırlar yoklanıp meydana çıkarılacaktır"
        },
        {
            "chapter": 86,
            "verse": 10,
            "text": "Artık onun gücü de, yardımcısı da yoktur"
        },
        {
            "chapter": 86,
            "verse": 11,
            "text": "Andolsun o dönüş yeri olan göğe"
        },
        {
            "chapter": 86,
            "verse": 12,
            "text": "Ve yarılan yere"
        },
        {
            "chapter": 86,
            "verse": 13,
            "text": "Ki doğrusu bu, kesin bir sözdür"
        },
        {
            "chapter": 86,
            "verse": 14,
            "text": "Ve o, bir şaka değildir"
        },
        {
            "chapter": 86,
            "verse": 15,
            "text": "Gerçekten onlar düzen kuruyorlar"
        },
        {
            "chapter": 86,
            "verse": 16,
            "text": "Ben de bir düzen kurmaktayım"
        },
        {
            "chapter": 86,
            "verse": 17,
            "text": "Sen; şimdilik kafirlere mühlet ver, onları biraz geciktir"
        },
        {
            "chapter": 87,
            "verse": 1,
            "text": "Rabbının o çok yüce adını tesbih et"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "Ki O, yaratıp şekil vermiştir"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "Ki O, takdir edip doğru yolu göstermiştir"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "Ki O, yeşilliği çıkarmıştır"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "Sonra da onu kupkuru, siyah bir çöpe çevirmiştir"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Seni okutacağız da hiç unutmayacaksın"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "Yalnız Allah´ın dilediği başka. Çünkü O, açığı da, gizli olanı da bilir"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "Ve seni kolay olana muvaffak edeceğiz"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "O halde öğüt fayda verecekse, öğüt ver"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "Korkacak olan öğüt alacaktır"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "Bedbaht olan ise ondan kaçınır"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "Ki o, en büyük ateşe girecek olandır"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "O, orada ne ölecek, ne de dirilecektir"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Doğrusu arınan, felah bulmuştur"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "Rabbının adını anıp namaz kılan"
        }
    ]
}