{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kıyamet gününe yemin ederim"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "Nedamet çeken nefse yemin ederim"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "İnsan zanneder mi ki Biz; onun kemiklerini bir araya toplayamayız"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Evet, Biz parmak uçlarını bile düzeltmeye kadiriz"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Fakat insan, önündekini yalanlamak ister de"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "Kıyamet günü de ne zamanmış? diye sorar"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Göz kamaştığında"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "Ay tutulduğunda"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "Güneş ve ay bir araya getirildiğinde"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "O gün, insan; kaçacak yer nerede? der"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Hayır, hiç bir sığınak yoktur"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "O gün, herkesin duracağı yer, ancak Rabbının huzurudur"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "O gün, önde ve sonda ne yaptıysa insana bildirilir"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "Daha doğrusu insan, kendi kendinin şahididir"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "Ma´zeretlerini sayıp dökse de"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Onu acele etmen için dilini onunla beraber oynatma"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Şüphesiz onu toplamak ve okutmak Bize aittir"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "Öyleyse Biz, onu okuduğumuz vakit; sen, onun okunuşunu dinle"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "Sonra şüphesiz onu açıklamak da Bize aittir"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Hayır, bilakis siz, çabuk geçeni seversiniz"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "Ve ahireti bırakırsınız"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Bir takım yüzler o gün parlayacak"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "Rabblarına bakacaklardır"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "Bir takım yüzler de asıktır"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "Belkemiğinin kırılacağını anlar"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Dikkat edin, köprücük kemiğine bir dayandığı zaman"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "Çare bulacak kim? denir"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "Ve ayrılık vaktinin geldiğini anlar"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "Bacak da bacağa dolaşır"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "O gün; sevk, yalnız Rabbınadır"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Tasdik etmemişti, namaz da kılmamıştı"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "Fakat yalanlamış, yüz çevirmişti"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "Sonra da salına salına kendinden yana olanlara gitmişti"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "Yine yazıklar olsun sana, yazıklar"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "İnsan kendisinin başıboş bırakılacağını mı sanır"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "O, akıtılan bir meni damlası değil miydi"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "Sonra kan pıhtısı olmuş; sonra, onu insan biçimine koyup yaratmış ve düzeltmiştir"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "Ve ondan erkek, dişi iki cins yaratmıştır"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "Şimdi O; ölüleri diriltmeye kadir değil midir"
        }
    ]
}