{
    "maqras": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "Hvali ime Gospodara svoga Svevisnjeg"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "koji sve stvara i cini skladnim"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "i koji sve s mjerom određuje i nadahnjuje"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "i koji cini da rastu pasnjaci"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "i potom cini da postanu suhi, potamnjeli"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "Mi cemo te nauciti da izgovaras pa nista neces zaboraviti"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "osim onoga sto ce Allah htjeti - jer, On zna i ono sto na javu iznosite i ono sto tajite"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "i sve sto je dobro Mi cemo tebi dostupnim uciniti"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "zato poucavaj - pouka ce vec od koristi biti"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "dozvace se onaj koji se Allaha boji"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "a izbjegavace je onaj najgori"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "koji ce u vatri velikoj gorjeti"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pa u njoj nece ni umrijeti ni zivjeti"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "Postici ce sta zeli onaj koji se ocisti"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "i spomene ime Gospodara svoga pa molitvu obavi"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "Ali, vi vise zivot na ovom svijetu volite"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "a onaj svijet je bolji i vjecan je"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "Ovo, doista, ima u listovima davnasnjim"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "listovima Ibrahimovim i Musaovim"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "Da li je doprla do tebe vijest o teskoj nevolji"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "kada ce se neka lica potistena"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "premorena, napacena"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "u vatri uzarenoj prziti"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "sa vrela uzavrelog piti"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "kada drugog jela osim trnja nece imati"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "koje nece ni ugojiti ni glad utoliti"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "Neka lica toga dana bice radosna"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "trudom svojim zadovoljna"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "u Dzennetu izvanrednome"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "u kome prazne besjede nece slusati"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "U njemu su izvor-vode koje teku"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "u njemu su i divani skupocjeni"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "i pehari postavljeni"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "i jastuci poređani"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "i cilimi rasireni"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "Pa zasto oni ne pogledaju kamile - kako su stvorene"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "i nebo - kako je uzdignuto"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "i planine - kako su postavljene"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "i Zemlju - kako je prostrta"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "Ti poucavaj - tvoje je da poucavas"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "ti vlast nad njima nemas"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "A onoga koji glavu okrece i nece da vjeruje"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "njega ce Allah najvecom mukom muciti"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "Nama ce se oni, zaista vratiti"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "i pred Nama ce, doista racun polagati"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "Tako mi zore"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "i deset noci"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "i parnih i neparnih"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "i noci kada nestaje"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "zar to pametnom zakletva nije"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "Zar ne znas sta je Gospodar tvoj sa Adom uradio"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "sa stanovnicima Irema, puna palata na stubovima"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "kojima ravna ni u jednoj zemlji nije bilo"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "i Semudom, koji je stijene u dolini klesao"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "i faraonom, koji je satore imao"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "koji su na zemlji zulum provodili"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "i poroke na njoj umnozili"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "pa je Gospodar tvoj - bic patnje na njih spustio"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "jer, Gospodar tvoj je, zaista, u zasjedi"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "Covjek, kada Gospodar njegov hoce da ga iskusa pa mu pocast ukaze i blagodatima ga obaspe, rekne: \"Gospodar moj je prema meni plemenito postupio"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "A kad mu, da bi ga iskusao, opskrbu njegovu oskudnom ucini, onda rekne: \"Gospodar moj me je napustio"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "A nije tako! Vi paznju sirocetu ne ukazujete"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "i da se puki siromah nahrani - jedan drugog ne nagovarate"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "a nasljedstvo pohlepno jedete"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "i bogatstvo pretjerano volite"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "A ne valja to! Kada se Zemlja u komadice zdrobi"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "i kad dođe naređenje Gospodara tvoga, a meleki budu sve red do reda"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "i kad se tog Dana primakne Dzehennem; tada ce se covjek sjetiti - a na sto mu je sjecanje"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "i reci: \"Kamo srece da sam se za ovaj zivot pripremio"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "Tog Dana niko nece kao On muciti"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "i niko nece kao On u okove okivati"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "A ti, o duso smirena"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "vrati se Gospodaru svome zadovoljna, a i On tobom zadovoljan"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "pa uđi među robove Moje"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "i uđi u Dzennet Moj"
        }
    ]
}