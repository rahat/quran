{
    "chapter": [
        {
            "chapter": 75,
            "verse": 1,
            "text": "Kunem se Danom kada Smak svijeta nastupi"
        },
        {
            "chapter": 75,
            "verse": 2,
            "text": "i kunem se dusom koja sebe kori"
        },
        {
            "chapter": 75,
            "verse": 3,
            "text": "Zar covjek misli da kosti njegove necemo sakupiti"
        },
        {
            "chapter": 75,
            "verse": 4,
            "text": "Hocemo, Mi mozemo stvoriti jagodice prsta njegovih ponovo"
        },
        {
            "chapter": 75,
            "verse": 5,
            "text": "Ali, covjek hoce dok je ziv da grijesi"
        },
        {
            "chapter": 75,
            "verse": 6,
            "text": "pa pita: \"Kada ce Smak svijeta biti"
        },
        {
            "chapter": 75,
            "verse": 7,
            "text": "Kad se pogled od straha ukoci"
        },
        {
            "chapter": 75,
            "verse": 8,
            "text": "i Mjesec pomraci"
        },
        {
            "chapter": 75,
            "verse": 9,
            "text": "i Sunce i Mjesec spoje"
        },
        {
            "chapter": 75,
            "verse": 10,
            "text": "tog dana covjek ce povikati: \"Kuda da se bjezi"
        },
        {
            "chapter": 75,
            "verse": 11,
            "text": "Nikuda! Utocista nema"
        },
        {
            "chapter": 75,
            "verse": 12,
            "text": "Toga dana bice Gospodaru tvome prepusten"
        },
        {
            "chapter": 75,
            "verse": 13,
            "text": "toga dana covjek ce o onome sto je pripremio, a sto propustio obavijesten biti"
        },
        {
            "chapter": 75,
            "verse": 14,
            "text": "sam covjek ce protiv sebe svjedociti"
        },
        {
            "chapter": 75,
            "verse": 15,
            "text": "uzalud ce mu biti sto ce opravdanja svoja iznositi"
        },
        {
            "chapter": 75,
            "verse": 16,
            "text": "Ne izgovaraj Kur´an jezikom svojim da bi ga sto prije zapamtio"
        },
        {
            "chapter": 75,
            "verse": 17,
            "text": "Mi smo duzni da ga saberemo da bi ga ti citao"
        },
        {
            "chapter": 75,
            "verse": 18,
            "text": "A kada ga citamo, ti prati citanje njegovo"
        },
        {
            "chapter": 75,
            "verse": 19,
            "text": "a poslije, Mi smo duzni da ga objasnimo"
        },
        {
            "chapter": 75,
            "verse": 20,
            "text": "Uistinu! vi ovaj prolazni svijet volite"
        },
        {
            "chapter": 75,
            "verse": 21,
            "text": "a o onom drugom brigu ne vodite"
        },
        {
            "chapter": 75,
            "verse": 22,
            "text": "Toga dana ce neka lica blistava biti"
        },
        {
            "chapter": 75,
            "verse": 23,
            "text": "u Gospodara svoga ce gledati"
        },
        {
            "chapter": 75,
            "verse": 24,
            "text": "toga dana ce neka lica smrknuta biti"
        },
        {
            "chapter": 75,
            "verse": 25,
            "text": "tesku nevolju ce ocekivati"
        },
        {
            "chapter": 75,
            "verse": 26,
            "text": "Pazi! Kada dusa dopre do kljucnih kosti"
        },
        {
            "chapter": 75,
            "verse": 27,
            "text": "i vikne se: \"Ima li vidara"
        },
        {
            "chapter": 75,
            "verse": 28,
            "text": "i on se uvjeri da je to cas rastanka"
        },
        {
            "chapter": 75,
            "verse": 29,
            "text": "i noga se uz nogu savije"
        },
        {
            "chapter": 75,
            "verse": 30,
            "text": "toga dana ce Gospodaru tvome priveden biti"
        },
        {
            "chapter": 75,
            "verse": 31,
            "text": "Nije vjerovao nije molitvu obavljao"
        },
        {
            "chapter": 75,
            "verse": 32,
            "text": "nego je poricao i leđa okretao"
        },
        {
            "chapter": 75,
            "verse": 33,
            "text": "a onda svojima bahato odlazio"
        },
        {
            "chapter": 75,
            "verse": 34,
            "text": "Tesko tebi! Tesko tebi"
        },
        {
            "chapter": 75,
            "verse": 35,
            "text": "i jos jednom: Tesko tebi! Tesko tebi"
        },
        {
            "chapter": 75,
            "verse": 36,
            "text": "Zar covjek misli da ce sam sebi prepusten biti, da nece odgovarati"
        },
        {
            "chapter": 75,
            "verse": 37,
            "text": "Zar nije bio kap sjemena koja se ubaci"
        },
        {
            "chapter": 75,
            "verse": 38,
            "text": "zatim ugrusak kome On onda razmjer odredi i skladnim mu lik ucini"
        },
        {
            "chapter": 75,
            "verse": 39,
            "text": "i od njega onda dvije vrste, muskarca i zenu, stvori"
        },
        {
            "chapter": 75,
            "verse": 40,
            "text": "i zar Taj nije kadar da mrtve ozivi"
        }
    ]
}