{
    "rukus": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "Citaj, u ime Gospodara tvoga koji stvara"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "stvara covjeka od ugruska"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "Citaj, plemenit je Gospodar tvoj"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "koji poucava peru"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "koji covjeka poucava onome sto ne zna"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "Uistinu, covjek se uzobijesti"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "cim se neovisnim osjeti"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "a Gospodaru tvome ce se, doista, svi vratiti"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "Vidje li ti onoga koji brani"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "robu da molitvu obavi"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "Reci mi ako on misli da je na pravom putu"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "ili ako trazi da se kumirima moli"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "reci mi, ako on porice i glavu okrece"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "zar on ne zna da Allah sve vidi"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "Ne valja to! Ako se ne okani, dohvaticemo ga za kiku"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "kiku laznu i gresnu"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "pa neka on pozove drustvo svoje"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "Mi cemo pozvati zebanije"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "Ne valja to! Ti njega ne slusaj, vec molitvu obavljaj i nastoj da se Gospodaru svome priblizis"
        }
    ]
}