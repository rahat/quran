{
    "pages": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "Kada se nebo rascijepi"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "i kada zvijezde popadaju"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "i kada se mora jedna u druga uliju"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "i kada se grobovi ispreturaju"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "svako ce saznati sta je pripremio, a sta je propustio"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "O covjece, zasto da te obmanjuje to sto je Gospodar tvoj plemenit"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "koji te je stvorio - pa ucinio da si skladan i da si uspravan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "i kakav je htio lik ti dao"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "A ne valja tako! Vi u Sudnji dan ne vjerujete"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "a nad vama bdiju cuvari"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "kod Nas cijenjeni pisari"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "koji znaju ono sto radite"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "Cestiti ce sigurno u Dzennet"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "a grjesnici sigurno u Dzehennem"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "na Sudnjem danu u njemu ce gorjeti"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "i vise iz njega nece izvedeni biti"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "A znas li ti sta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "i jos jednom: znas li ti sta je Sudnji dan"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "Dan kada niko nikome nece moci nimalo pomoci, toga dana ce vlast jedino Allah imati"
        },
        {
            "chapter": 83,
            "verse": 1,
            "text": "Tesko onima koji pri mjerenju zakidaju"
        },
        {
            "chapter": 83,
            "verse": 2,
            "text": "koji punu mjeru uzimaju kada od drugih kupuju"
        },
        {
            "chapter": 83,
            "verse": 3,
            "text": "a kada drugima mjere na litar ili na kantar - zakidaju"
        },
        {
            "chapter": 83,
            "verse": 4,
            "text": "Kako ne pomisle da ce ozivljeni biti"
        },
        {
            "chapter": 83,
            "verse": 5,
            "text": "na Dan veliki"
        },
        {
            "chapter": 83,
            "verse": 6,
            "text": "na Dan kada ce se ljudi zbog Gospodara svjetova dici"
        }
    ]
}