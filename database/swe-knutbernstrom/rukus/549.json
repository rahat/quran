{
    "rukus": [
        {
            "chapter": 107,
            "verse": 1,
            "text": "VAD ANSER du om den [människa] som förnekar Domen"
        },
        {
            "chapter": 107,
            "verse": 2,
            "text": "Det är samme man som motar undan den faderlöse"
        },
        {
            "chapter": 107,
            "verse": 3,
            "text": "och som inte uppmanar [någon] att ge dem som lider nöd att äta"
        },
        {
            "chapter": 107,
            "verse": 4,
            "text": "Det skall gå dem illa som ber"
        },
        {
            "chapter": 107,
            "verse": 5,
            "text": "utan att deras hjärtan deltar i bönen"
        },
        {
            "chapter": 107,
            "verse": 6,
            "text": "de som vill ses [och berömmas]"
        },
        {
            "chapter": 107,
            "verse": 7,
            "text": "men som vägrar [sin medmänniska] även den minsta hjälp"
        }
    ]
}